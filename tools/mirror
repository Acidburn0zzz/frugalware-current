#!/bin/sh

for i in current stable
do
	cd ~/git/$i
	[ "$i" = "current" ] && git fetch /pub/frugalware/frugalware-stable master:$(readlink /pub/frugalware/frugalware-stable|sed 's/frugalware/maint/')
	git push --mirror github:frugalware/frugalware-$i.git
	git push --mirror gitorious:frugalware/frugalware-$i.git
done
