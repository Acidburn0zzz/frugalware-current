#!/bin/bash

# fix permissions of uploaded files

cd ..
file=`mktemp`
find * -perm 755 ! -type d >$file
find * -type d ! -name _darcs -exec chmod 755 {} \;
chmod 775 _darcs
find * ! -type d ! -type l -exec chmod 644 {} \;
cat $file |xargs chmod +x
rm $file

# cleanup for files created by mktemp
find . -name 'tmp.*' -exec rm {} \;

chown -R vmiklos.users *
