#!/bin/bash

cd /home/drweb/repos
for i in apparmor bmh1980 darcsstats iron pacman-i18n setup vcstime-ng xbit \
	boobaa fwpkgcreator pacman pacman-tools vmiklos zleho crazy mkfwxenU \
	fwmakekrnl fwlive frugalwareutils homepage-ng \
	frugalware-current frugalware-0.5
do
	[ -e $i/_darcs/lock ] && continue
	if [ ! -d $i ]; then
		darcs get http://darcs.frugalware.org/repos/$i
	else
		cd $i
		darcs pull -a
		cd ..
	fi
done
