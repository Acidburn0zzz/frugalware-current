version="1.7"
codename="Gaia"

pre1=(
"Package updates:"
"Kernel 3.2.9"
"KDE 4.8.0"
"LibreOffice 3.5"
"New features:"
"Kernel modules are now compressed with XZ"
"GRUB2 has replaced GRUB1"
)

pre2=(
"Package updates:"
""
"New features:"
""
)

rc1=(
"Package updates:"
""
"New features:"
""
)

rc2=(
"Package updates:"
""
"New features:"
""
)

stable=(
"Package updates:"
""
"New features:"
""
)

# $1 is release
# $2 is news
output()
{
	local _previous
	local _current
	local _addendum
	case $1 in
		pre1)
			_previous="$(echo $version-0.1 | bc)"
			_current="${version}pre1"
			_addendum="the first technical preview of the upcoming $version stable release."
			;;
		pre2)
			_previous="${version}pre1"
			_current="${version}pre2"
			_addendum="the second technical preview of the upcoming $version stable release."
			;;
		rc1)
			_previous="${version}pre2"
			_current="${version}rc1"
			_addendum="the first candidate of the upcoming $version stable release."
			;;
		rc2)
			_previous="${version}rc1"
			_current="${version}rc2"
			_addendum="the second candidate of the upcoming $version stable release."
			;;
		stable)
			_previous="$(echo $version-0.1 | bc)"
			_current="$version"
			;;
	esac

	printf "The Frugalware Developer Team is pleased to <a href="/news/$2">announce</a> the immediate availability of Frugalware $_current, $_addendum</p>\n"
	printf "<p>Here are some of the major improvements, fixes and updates since $_previous:<br/>\n"
	printf "Please refer to the Frugalware <a href="http://ftp.frugalware.org/pub/frugalware/frugalware-testing/ChangeLog.txt">Testing ChangeLog</a> for more information.<br/>\n"
	printf "Download for i686: See our <a href="http://frugalware.org/download/frugalware-testing-iso">mirror list</a>. Don't forget to check the <a href="http://frugalware.org/download/frugalware-testing-iso/SHA1SUMS">integrity</a> of the install images before burning!<br/>\n"
	printf "<b>NOTE</b>: Click <a href="/docs/install#_choosing_installation_flavor">here</a> to read more about what media you need for the installation.<br/>\n"
}

output pre1 21
