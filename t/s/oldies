#!/bin/bash

if [ "$1" ==  "--help" ]; then
        echo "packages not updated at least for one year"
        exit 1
fi

cd ../..

unset LANG LC_ALL

TMP_FILE1=$(mktemp)
TMP_FILE2=$(mktemp)

## add -arm- once is maintained again
for i in $(find frugalware-i686  -mtime +365 -name '*.fpm')
do
		_since="$(ls -lh $i | awk '{print $8}')"
		_ppkg="$(ls -lh $i | awk '{print $9}' | sed 's|frugalware-i686/||g')"
		_group="$(LC_ALL=C pacman -Qi -p $i | grep Groups | awk '{print $3}')" ## just main grp
		_arch="32bit"
		echo "$_since arch=$_arch -> $_group/$_ppkg" >>$TMP_FILE1
done

_since=""
_ppkg=""
_group=""
_arch=""

for i in $(find frugalware-x86_64  -mtime +365 -name '*.fpm')
do
		_since="$(ls -lh $i | awk '{print $8}')"
		_ppkg="$(ls -lh $i | awk '{print $9}' | sed 's|frugalware-x86_64/||g')"
		_group="$(LC_ALL=C pacman -Qi -p $i | grep Groups | awk '{print $3}')" ## just main grp
		_arch="64bit"
		echo "$_since arch=$_arch -> $_group/$_ppkg" >>$TMP_FILE1
done

cat $TMP_FILE1 | sort -u
cat $TMP_FILE2 | sort -u

rm -rf $TMP_FILE1 $TMP_FILE2
