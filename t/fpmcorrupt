#!/bin/bash

if [ "$1" ==  "--help" ]; then
	echo "corrupted packages (according to the fdb)"
	exit 1
fi

tmp=`mktemp -d`

cd ..
for i in frugalware-*
do
	arch=${i#frugalware-}
	cd $i
	tar xf frugalware-current.fdb -C $tmp
	for j in `ls $tmp`
	do
		pkg=$j-$arch.fpm
		# silently ignore, this is not fpmmissing
		[ -f "$pkg" ] || continue
		grep -q `sha1sum $pkg |sed 's/ .*//'` $tmp/$j/desc || \
			echo "$i/$pkg is corrupted"
	done
	rm -rf $tmp/*
	cd ..
done

rm -rf tmp
