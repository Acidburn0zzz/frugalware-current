#!/bin/bash

if [ "$1" == "--help" ]; then
	echo "old-style up2dates"
	exit 1
fi

find ../source -type f -name FrugalBuild -print0 | xargs -0 -n 1 -I{} -P16 \
	bash -c "egrep -q \"^up2date=.*lynx\" {} && \
	grep -q Maintainer {} && \
	( echo -n \"{} is using lynx in up2date \" &&  \
	grep -m 1 Maintainer {} | sed 's/.*: //' ) | sed 's/..\/source\/\(.*\)\/\(.*\)\/FrugalBuild/\2/'  "

