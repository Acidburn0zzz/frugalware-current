# Compiling Time: 0.01 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=storm
pkgver=0.16.0
pkgrel=2
pkgdesc="Storm is an object-relational mapper (ORM) for Python"
url="https://storm.canonical.com/"
up2date="elinks -dump https://launchpad.net/storm/+download | Flasttar"
source=(http://launchpad.net/$pkgname/trunk/${pkgver:0:4}/+download/$pkgname-$pkgver.tar.bz2)
depends=('python')
options=('nostrip')
groups=('devel-extra')
archs=('i686' 'x86_64')
sha1sums=('485b1c3a7fc82eb240d7527073eb65b0be8321de')

build() {
	Fcd
	python setup.py build || Fdie
	python setup.py install --prefix=/usr --root=$Fdestdir || Fdie
}

# optimization OK
