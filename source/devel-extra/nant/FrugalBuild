# Last Modified: Tue, 29 Aug 2006 16:41:32 +0200
# Compiling Time: 0.14 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=nant
pkgver=0.85_rc4
pkgrel=1
pkgdesc="Nant is a .NET build tool."
url="http://www.mono-project.com/"
depends=('mono')
options=('nofakeroot' 'scritplet')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://go-mono.com/sources-stable/|grep -m1 'nant-'|sed 's/.*nt-\(.*\)-src.*/\1/;s/-/_/'"
source=(http://go-mono.com/sources/$pkgname/$pkgname-`echo $pkgver|sed 's/_/-/'`-src.tar.gz)
sha1sums=('76e58041928a9ac0a953f2259ef54e5e2d534028')

build()
{
	Fcd $pkgname-`echo $pkgver|sed 's/_/-/'`
	make || Fdie
	make prefix=$Fdestdir/usr install || Fdie
	Fsed "$Fdestdir" "" $Fdestdir/usr/bin/$pkgname
}

