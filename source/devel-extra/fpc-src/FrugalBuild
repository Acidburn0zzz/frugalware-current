# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=fpc-src
pkgver=2.2.4
pkgrel=2
pkgdesc="Source code for Free Pascal Compiler."
url="http://www.freepascal.org"
depends=()
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep 'latest stable' |sed 's/.*Version \(.*\) is.*/\1/'"
options=('nostrip')
_F_archive_name="fpcbuild"
source=(ftp://ftp.freepascal.org/pub/fpc/dist/$pkgver/source/$_F_archive_name-$pkgver.tar.gz)
_F_cd_path="$_F_archive_name-$pkgver/fpcsrc"
sha1sums=('9ea373ad4be152b67a249784f69cfd23702e61fe')

build() {
	Fcd
	Fmkdir        /usr/lib/fpc/src
	Fcprel .      /usr/lib/fpc/src
	Fdirschmod    /usr/lib/fpc/src 0755
	Ffileschmod   /usr/lib/fpc/src 0644
}
