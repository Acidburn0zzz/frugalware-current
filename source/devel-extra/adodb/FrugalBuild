# Contributor: VMiklos <vmiklos@frugalware.org>
# Maintainer: CSÉCSY László <boobaa@frugalware.org>

pkgname=adodb
pkgver=506
pkgrel=1
pkgdesc="A PHP database class library to hide the differences between the different databases."
rodepends=('php')
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext=.tgz
Finclude sourceforge
url="http://adodb.sourceforge.net/"
up2date="lynx -dump http://phplens.com/lens/adodb/docs-adodb.htm | grep 'V.*(c)' | sed 's/.*V\([^ ]\+\).*/\1/;s/\.//'"
source=${source//-/}

build() {
	Fcd ${pkgname}5
	for i in `find . -name '*.php' -print`
	do
		Ffilerel $i /usr/lib/php/adodb/$i
	done
	Ffilerel xsl/*.xsl /usr/lib/php/adodb/xsl/
	Fdocrel docs/*
	Fdocrel *.txt xmlschema.dtd session/adodb-sess.txt pear/readme.Auth.txt
}

sha1sums=('ff521d7a2dd170c51112d75c93ef1619709bd5b1')
