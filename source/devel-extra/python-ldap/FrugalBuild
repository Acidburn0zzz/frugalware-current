pkgname=python-ldap
pkgver=2.2.0
pkgrel=2
pkgdesc="This is a python module to access an LDAP server"
groups=('devel-extra')
archs=('i686' 'x86_64')
depends=('python>=2.5' 'libldap')
makedepends=('openldap')
Finclude sourceforge
source=(${source[@]} setup.cfg)
sha1sums=('bc25275af4690b7438728787bd429e249e428260' \
	  'ba24ef06ceba30b76bbde407f6ca54431ee5d047')

build() {
	Fcd
	cp -f $Fsrcdir/setup.cfg setup.cfg
	Fmake
	Fmakeinstall
}

# optimization OK
