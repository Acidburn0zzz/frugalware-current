pkgver=0.6
pkgrel=1
pkgdesc="Python interface to the OpenSSL library"
url="http://pyopenssl.sourceforge.net/"
license="LGPL2.1"
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=31249 | grep -m 1 -o 'pyOpenSSL-\([0-9].\+\).tar.gz' | cut -d - -f 2 | sed 's|.tar.gz||'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/pyOpenSSL-$pkgver.tar.gz)
groups=('devel-extra')
archs=('i686' 'x86_64')
depends=('python' 'openssl')
sha1sums=('a9626095db201eeac979d0624101f5afa888f9b6')

build()
{
	Fcd pyOpenSSL-$pkgver
	Fbuild
}

