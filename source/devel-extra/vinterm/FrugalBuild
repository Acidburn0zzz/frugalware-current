pkgname=vinterm
pkgver=0.4.1
pkgrel=1
pkgdesc="A terminal emulator that simulates the looks of 1980s monitor."
depends=('sdl' 'libao')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude googlecode
sha1sums=('d6208ade7749fc011c626c5f87d18adfa654f587')

build() {
	Fcd
	make PREFIX=/usr || Fdie
	make PREFIX=/usr DESTDIR="$Fdestdir" install || Fdie
}
