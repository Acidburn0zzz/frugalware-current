# Compiling Time: 0.10 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>
# Contributor: Elentir <elentir@mailoo.org>

pkgname=camlp5
pkgver=5.11
pkgrel=1
pkgdesc="Camlp5 is a preprocessor-pretty-printer of OCaml."
url="http://pauillac.inria.fr/~ddr/camlp5"
source=("$url/distrib/src/$pkgname-$pkgver.tgz")
depends=('ocaml')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
Fconfopts="-prefix /usr"
sha1sums=('59b9321427954e224846608bf4b4e9b1991c4ad4')

build() {
  unset MAKEFLAGS
  Fmake
  make opt || Fdie
  Fmakeinstall
}
