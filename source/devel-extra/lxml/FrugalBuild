pkgname=lxml
pkgver=3.5.0
pkgrel=1
pkgdesc="Easy-to-use library for working with XML and HTML in Python."
url="http://lxml.de/"
depends=('libxml2>=2.9.3-2' 'python>=2.7.11-3' 'libxslt>=1.1.28-3')
makedepends=('cython>=0.23.4')
_F_github_tag="yes"
_F_github_ver="$pkgname-$pkgver"
Finclude github
up2date="$up2date | cut -d '_' -f 2"
groups=('devel-extra')
archs=('i686' 'x86_64')
sha1sums=('68ba58304508cb2d1f51a6d1ebd7207a605489a8')

build()
{
	Fcd
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}


# optimization OK
