pkgname=lxml
pkgver=3.7.2
pkgrel=1
pkgdesc="Easy-to-use library for working with XML and HTML in Python."
url="http://lxml.de/"
depends=('libxml2>=2.9.4-3' 'python>=2.7.12-2' 'libxslt>=1.1.28-3')
makedepends=('cython>=0.24.1-2')
_F_github_tag="yes"
_F_github_ver="$pkgname-$pkgver"
Finclude github
up2date="$up2date | cut -d '_' -f 2"
groups=('devel-extra')
archs=('x86_64')
sha1sums=('4b29ad28f9e8c5f3b1abd0557a10842f4a340d01')

build()
{
	Fcd $pkgname-$pkgname-$pkgver ## lol
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}


# optimization OK
