pkgname=perl-cgi
modname=cgi
modrealname=CGI.pm
modauthor=L/LD/LDS
pkgver=3.23
pkgrel=2
pkgdesc="Simple Common Gateway Interface Class"
depends=('perl')
groups=('devel-extra')
_F_perl_sourcename="CGI.pm"
Finclude perl
source=(${source[@]} fix-install-paths.patch)
up2date="lynx -dump -nolist 'http://search.cpan.org/search?query="$modrealname"&mode=module'|grep -m1 "$modrealname-"|sed -e 's/.*"$modrealname"-\(.*\) .*/\1/' -e 's/ .*//'"
pkgname=perl-cgi
archs=('i686' 'x86_64')
sha1sums=('f42dac21e094d5f983ddb101e62c717cc3d2d47f' \
	  'd11ecb0d06afd0aacd0291708c5fac1656adb6a0')

build() {
    Fcd $modrealname-$pkgver
    Fbuild
    # Conflicts with perl
    Frm /usr/man/man3/
}
