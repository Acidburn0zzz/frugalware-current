pkgname=cdiff
pkgver=0.9
pkgrel=1
pkgdesc="Colored, incremental, side-by-side diff viewer"
depends=('python' 'less')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude pypi
sha1sums=('d434bbe740a8b3f93f8ce42ab82facc65a6e7b87')

build() {
	Fcd
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}
