pkgname=cdiff
pkgver=0.5.1
pkgrel=1
pkgdesc="Colored, incremental, side-by-side diff viewer"
depends=('python' 'less')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude pypi
sha1sums=('29ae87f393ea44da2b20b001d4c88307a302d635')

build() {
	Fcd
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}
