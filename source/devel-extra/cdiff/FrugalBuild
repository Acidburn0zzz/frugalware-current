pkgname=cdiff
pkgver=0.8
pkgrel=1
pkgdesc="Colored, incremental, side-by-side diff viewer"
depends=('python' 'less')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude pypi
sha1sums=('cc4ace7759cf8e9eb01fc71197a99364aa16935e')

build() {
	Fcd
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}
