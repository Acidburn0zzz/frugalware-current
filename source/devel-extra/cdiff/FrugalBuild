pkgname=cdiff
pkgver=0.7
pkgrel=1
pkgdesc="Colored, incremental, side-by-side diff viewer"
depends=('python' 'less')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude pypi
sha1sums=('b387d99dfe3be08ba5fa9253e88e016d0aa1644c')

build() {
	Fcd
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}
