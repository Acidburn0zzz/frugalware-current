pkgname=cdiff
pkgver=0.4
pkgrel=1
pkgdesc="Colored, incremental, side-by-side diff viewer"
depends=('python' 'less')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude pypi
sha1sums=('075d240c66d40a4868ac06267583bbe0836f34ca')

build() {
	Fcd
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}
