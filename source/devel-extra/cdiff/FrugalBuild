pkgname=cdiff
pkgver=0.6
pkgrel=1
pkgdesc="Colored, incremental, side-by-side diff viewer"
depends=('python' 'less')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude pypi
sha1sums=('f512a59cef046fbb5735833616f769d7e378950b')

build() {
	Fcd
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}
