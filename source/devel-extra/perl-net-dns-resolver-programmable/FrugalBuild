# Compiling Time: 0.1 SBU
# Maintainer: Zsolt Szalai <xbit@frugalware.org>

_F_perl_name=Net-DNS-Resolver-Programmable
_F_perl_author=J/JM/JMEHNLE/net-dns-resolver-programmable
pkgver=v0.003
pkgrel=2
pkgdesc="programmable DNS resolver class for offline emulation of DNS"
depends+=('perl-net-dns')
makedepends+=('perl-module-build')
Finclude perl
archs=('x86_64' 'i686')
sha1sums=('05601b1a3054eaaca03b3ec6e4aeefdb838dc44e')
options+=('force')

build() {

	Fcd Net-DNS-Resolver-Programmable-$pkgver
	perl Build.PL || Fdie
	perl Build || Fdie
	perl Build install destdir=$Fdestdir || Fdie
	Ffix_perl

}
