pkgname=python-distribute
_F_archive_name="distribute"
pkgver=0.6.30
pkgrel=1
pkgdesc="Enhanced version of setuptools"
archs=('i686' 'x86_64' 'arm')
groups=('devel-extra')
depends=('python>=2.7')
replaces=('distribute')
provides=('distribute')
conflicts=('distribute')
options=('nostrip')
_F_pypi_name="distribute"
Finclude pypi python
sha1sums=('40dfce237883d1c02817f726128f61614dc686ff')

build()
{
	Fcd
	python setup.py build || Fdie
	python$_F_python_ver setup.py install \
		--root="$Fdestdir" \
		--optimize=1 \
		--skip-build || Fdie
}
