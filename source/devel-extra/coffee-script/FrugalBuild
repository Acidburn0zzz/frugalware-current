# Compiling Time: 0.10 SBU
# Maintainer:  DeX77 <dex77@frugalware.org>

pkgname=coffee-script
pkgver=1.12.7
pkgrel=1
pkgdesc='CoffeeScript is a little language that compiles into JavaScript'
archs=('x86_64')
groups=('devel-extra')
url='http://coffeescript.org'
depends=('nodejs')
_F_github_author="jashkenas"
_F_github_name="coffeescript"
_F_github_tag=y
_F_archive_grepv="beta"
Finclude github
source=("https://registry.npmjs.org/$pkgname/-/$pkgname-$pkgver.tgz")
sha1sums=('c05dae0cb79591d05b3070a8433a98c9a89ccc53')

build() {
	Fexec npm install -g --user root --prefix "$Fdestdir"/usr "$Fsrcdir"/$pkgname-$pkgver.tgz
	Frm usr/etc
}
