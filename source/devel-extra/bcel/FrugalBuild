# Compiling Time: 0.54 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=bcel
pkgver=6.0
pkgextraver="-src"
pkgrel=1
pkgdesc="The Byte Code Engineering Library: analyze, create, manipulate Java class files"
url="http://commons.apache.org/proper/commons-bcel/"
groups=('devel-extra')
archs=('x86_64')
up2date="Flasttar http://commons.apache.org/proper/commons-bcel/download_bcel.cgi "
source=("http://apache.mirror.digionline.de//commons/bcel/source/bcel-$pkgver-src.tar.gz")
signatures=("https://www.apache.org/dist/commons/bcel/source/bcel-${pkgver}-src.tar.gz.asc")
depends=() ## wrong some java foo's
Finclude openjava
makedepends+=('maven')

build()
{
	Fcd
	Fexec mvn -Dmaven.repo.local=$Fsrcdir/repo -DskipTests=true clean package || Fdie
	Fjar target/bcel-$pkgver.jar
}

# optimization OK
