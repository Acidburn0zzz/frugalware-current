# Compiling Time: 0.54 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=bcel
pkgver=5.2
pkgrel=3
pkgdesc="The Byte Code Engineering Library: analyze, create, manipulate Java class files"
url="http://jakarta.apache.org/bcel/"
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="Flastarchive https://commons.apache.org/proper/commons-bcel/download_bcel.cgi .src.tar.gz"
source=(http://www.apache.org/dist/jakarta/bcel/source/bcel-$pkgver-src.tar.gz \
	bcel-5.2-system-regexp.diff \
	encoding.patch)
signatures=($source.asc '' '')
depends=() ## wrong some java foo's
Finclude openjava

build()
{
	Fpatchall
	Fjavacleanup
	Fant jar
	mv target/bcel{-$pkgver,}.jar
	Fjar target/bcel.jar
}

# optimization OK
