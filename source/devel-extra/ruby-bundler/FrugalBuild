pkgname=ruby-bundler
pkgver=1.15.3
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('bd1e1ba80789ea013a11a2909a154dcee118ebbc')

build() {
       Finstallgem
       Frm usr/bin/rake
}
