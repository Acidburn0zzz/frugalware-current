pkgname=ruby-bundler
pkgver=1.16.0
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('cb3c531fd27f82a7525224e4315418757056dc67')

build() {
       Finstallgem
       Frm usr/bin/rake
}
