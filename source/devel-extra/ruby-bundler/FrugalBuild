pkgname=ruby-bundler
pkgver=1.15.4
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('313a6413486ac07c7a70e5eaf0ba11683b14cb5b')

build() {
       Finstallgem
       Frm usr/bin/rake
}
