pkgname=ruby-bundler
pkgver=1.12.4
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life across many machines systematically and repeatably"
url="http://www.gembundler.com"
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('1558f33c251b4273585b43f1313cc8d4530041b9')

build() {
       Finstallgem
       Frm usr/bin/rake
}
