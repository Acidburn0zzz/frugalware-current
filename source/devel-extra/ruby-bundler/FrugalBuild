pkgname=ruby-bundler
pkgver=1.14.6
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('3e84d3a4dd43bfaec988b029f45c0d7ffa205ab8')

build() {
       Finstallgem
       Frm usr/bin/rake
}
