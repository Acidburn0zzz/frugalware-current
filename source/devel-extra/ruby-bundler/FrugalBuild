pkgname=ruby-bundler
pkgver=1.13.6
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('c4b33f5e0a6ad4a363d2820260f10454197cceff')

build() {
       Finstallgem
       Frm usr/bin/rake
}
