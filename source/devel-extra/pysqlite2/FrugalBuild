pkgname=pysqlite2
pkgver=2.8.3
_F_archive_name="pysqlite"
pkgrel=1
pkgdesc="Python DB-API 2.0 interface for SQLite."
url="http://initd.org/tracker/pysqlite"
depends=('python' 'sqlite3')
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_pypi_name="pysqlite"
Finclude pypi
source=(https://pypi.python.org/packages/42/02/981b6703e3c83c5b25a829c6e77aad059f9481b0bbacb47e6e8ca12bd731/pysqlite-2.8.3.tar.gz)
sha1sums=('70e6ed5e771b1b584ffe23f93e3eb1ceef44895a')

build()
{
  	Fcd $_F_archive_name-$pkgver
  	Fbuild
  	# Put documentation in the right place
  	Fmkdir usr/share/doc/$pkgname-$pkgver
  	Fmv usr/pysqlite2-doc/* usr/share/doc/$pkgname-$pkgver
  	Frm usr/pysqlite2-doc
}

# optimization OK
