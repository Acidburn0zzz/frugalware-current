pkgname=jedi
pkgver=0.10.2
pkgrel=1
pkgdesc="An autocompletion tool for Python that can be used for text editors"
url="https://github.com/davidhalter/jedi"
depends=('python')
makedepends=('python3')
groups=('devel-extra')
archs=('x86_64')
Finclude pypi
sha1sums=('bb15d63c6fb2581e5d350192dceef7bc4c2c0060')

subpkgs=("python3-$pkgname")
subdescs=("jedi python 3 support")
subdepends=("python-3.0>=3.5.1")
subgroups=("xlib")
subarchs=("x86_64")

build() {
	#python3
	Fcd
	python3 setup.py build
	python3 setup.py install --skip-build --root="$Fdestdir" || Fdie
	Fsplit python3-$pkgname usr

      	python setup.py build
        python setup.py install --skip-build --root="$Fdestdir" || Fdie

}
