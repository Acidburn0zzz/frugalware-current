pkgname=jedi
pkgver=0.9.0
pkgrel=2
pkgdesc="An autocompletion tool for Python that can be used for text editors"
url="https://github.com/davidhalter/jedi"
depends=('python')
makedepends=('python3')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude pypi
sha1sums=('da12481c66299ab9d9c5327c93733c6b5afd075a')

subpkgs=("${subpkgs[@]}" "python3-$pkgname")
subdescs=("${subdescs[@]}" "jedi python 3 support")
subdepends=("${subdepends[@]}" "python-3.0>=3.5.1")
subgroups=("${subgroups[@]}" "xlib")
subarchs=("${subarchs[@]}" "i686 x86_64")

build() {
	#python3
	Fcd
	python3 setup.py build
	python3 setup.py install --skip-build --root="$Fdestdir" || Fdie
	Fsplit python3-$pkgname usr

      	python setup.py build
        python setup.py install --skip-build --root="$Fdestdir" || Fdie

}
