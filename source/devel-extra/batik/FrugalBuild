# Compiling Time: 0.89 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=batik
pkgver=1.9
pkgrel=1
pkgdesc="A Java-based toolkit to use images in the SVG format."
url="http://xmlgraphics.apache.org/batik/"
Finclude openjava
depends=(${depends[@]} 'xalan-j' 'xml-commons-external' 'rhino>=1_7R1-2')
makedepends+=('maven')
groups=('devel-extra')
archs=('x86_64')
Fpkgversep="-src-"
up2date="Flasttar http://apache.mirror.iphh.net/xmlgraphics/batik/source/"
source=(http://www.apache.org/dist/xmlgraphics/batik/source/batik-src-$pkgver.zip)
signatures=("${source[0]}.asc")
_F_cd_path="$pkgname-$pkgver"

build()
{
	Fcd
	Fexec mvn -Dmaven.repo.local=$Fsrcdir/repo -DskipTests=true clean package || Fdie
	Fjar */target/*.jar

}
