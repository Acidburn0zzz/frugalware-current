# Compiling Time: 0.1 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

_F_perl_name=Socket6
_F_perl_author=U/UM/UMEMOTO
pkgver=0.19
pkgrel=1
pkgdesc="Perl extension IPv6 related part of the C socket.h defines and structure manipulators"
depends=('perl')
groups=('devel-extra')
Finclude perl
archs=('i686' 'x86_64')
sha1sums=('f710a0acfcbbfc41213a23ff71462c1f392cedda')

build() {
    Fcd $_F_perl_name-$pkgver
    perl Makefile.PL DESTDIR=$Fdestdir || Fdie
    make || Fdie
    Fmakeinstall
}

# optimization OK
