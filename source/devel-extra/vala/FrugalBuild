pkgname=vala
pkgver=0.36.2
pkgrel=1
pkgdesc="Vala is a prgramming language that aims to bring modern programming language features to GNOME developers"
depends=('glib2>=2.52.0' 'libffi>=3.2.1-2')
makedepends=('libxslt')
groups=('devel-extra')
archs=('x86_64')
_F_gnome_ext=".tar.xz"
_F_gnome_devel="n"
Finclude gnome
sha1sums=('29e2a5709950213078ee8daedbe9c8e1280deea1')

build() {
	Fcd
	Fsed '$(datadir)/pkgconfig' '$(libdir)/pkgconfig' vapigen/Makefile.{in,am}
	Fbuild
	Frm usr/share/pkgconfig
}

# optimization OK
