pkgname=vala
pkgver=0.33.1
pkgrel=1
pkgdesc="Vala is a prgramming language that aims to bring modern programming language features to GNOME developers"
depends=('glib2>=2.49.7-2' 'libffi>=3.2.1-2')
makedepends=('libxslt')
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_gnome_ext=".tar.xz"
_F_gnome_devel="y"
Finclude gnome
sha1sums=('0e1e503da8b9f41ca1d7dafc0cdda3563fb6351e')

build() {
	Fcd
	Fsed '$(datadir)/pkgconfig' '$(libdir)/pkgconfig' vapigen/Makefile.{in,am}
	Fbuild
	Frm usr/share/pkgconfig
}

# optimization OK
