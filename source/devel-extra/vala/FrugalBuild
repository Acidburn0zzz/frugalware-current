USE_DOC=${USE_DOC:-"y"}

pkgname=vala
pkgver=0.18.1
pkgrel=2
pkgdesc="Vala is a prgramming language that aims to bring modern programming language features to GNOME developers"
depends=('glib2>=2.33.14')
makedepends=('libxslt')
groups=('devel-extra')
archs=('i686' 'x86_64' 'arm')
options+=('asneeded')
_F_gnome_ext=".tar.xz"
Finclude gnome
sha1sums=('c6d24efb9a093b7b67b876b484c612a5af90b9bb')
Fconfopts+=" --enable-vapigen"
replaces=('vtg' 'valide')
provides=('vtg' 'valide')

if Fuse $USE_DOC; then
        subpkgs=("$pkgname-docs")
        subdescs=("Vala Documentation")
        subdepends=('devhelp')
        subgroups=('docs-extra')
        subarchs=('i686 x86_64')
fi

build() {
	Fbuild
	if Fuse $USE_DOC; then
        	Fsplit $pkgname-docs usr/share/devhelp
        fi
}

# optimization OK
