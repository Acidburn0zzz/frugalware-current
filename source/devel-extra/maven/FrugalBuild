# Compiling Time: 3 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname=maven
pkgver=3.5.2
pkgextraver=-src
pkgrel=1
pkgdesc="A Java project management and project comprehension tool"
url="http://maven.apache.org"
makedepends=('maven') #gnar
depends=() ## wrong some java foo's
Finclude openjava
groups=('devel-extra')
archs=('x86_64')
_F_archive_name="apache-maven"
up2date="Flasttar $url/download.cgi"
source=(http://www.apache.org/dist/maven/maven-3/${pkgver}/source/apache-maven-$pkgver-src.tar.gz \
			$pkgname.sh)
signatures=($source.asc '')
_F_cd_path=apache-maven-${pkgver}

build()
{
	Fcd
	Fexec mvn -Dmaven.repo.local=$Fsrcdir/repo -DdistributionTargetDir="$Fdestdir"/usr/lib/maven package
	Fexe /etc/profile.d/$pkgname.sh
}
