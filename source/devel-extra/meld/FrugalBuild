pkgname=meld
pkgver=1.1.3
pkgrel=1
pkgdesc="a visual diff and merge tool"
url="http://meld.sourceforge.net/"
depends=('gnome-python')
makedepends=('scrollkeeper' 'intltool')
up2date="lynx -dump http://meld.sourceforge.net/ | grep released | sed -n 's/.* \([0-9\.]\+\) released.*/\1/;1 p'"
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/1.1/$pkgname-$pkgver.tar.bz2)
groups=('devel-extra')
archs=('i686' 'x86_64')
sha1sums=('e7f17e8426f29aa448cfed306dccb00ac0a3e43b')

build() {
	Fcd
#	rm po/fr.po
	Fsed "prefix := /usr/local" "prefix := /usr" INSTALL
	Fsed "\(.*python.*compile.*\)" "#\1" GNUmakefile
	Fmake
	Fmakeinstall
}

# optimalization OK
