# Compiling Time: 0.01 SBU
# Maintainer: Melko <melko@frugalware.org>

_F_archive_name="apsw"
pkgname=python2-apsw
pkgver=3.15.0_r1
pkgrel=1
pkgdesc="Python2 wrapper for SQLite."
depends=('sqlite3>=3.15.0' 'python>=2.7.12-3')
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_github_author="rogerbinns"
_F_github_name="apsw"
_F_github_tag="yes"
Finclude github
source=(https://github.com/rogerbinns/apsw/archive/3.15.0-r1.tar.gz)
sha1sums=('041f2fe1e1bc361dbd8019842006b2b0301b34da')
_F_make_opts=" -j1"
CFLAGS+=" -fno-strict-aliasing"

provides=('apsw')
replaces=('apsw')
conflicts=('apsw')

build()
{
	Fcd apsw-${pkgver/_/-}
	## we want system sqlite..
	python setup.py build --enable=load_extension || Fdie
	python setup.py install --root=$Fdestdir/ || Fdie
}

# optimization OK
