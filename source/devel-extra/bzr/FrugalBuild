pkgname=bzr
pkgver=1.13.1
pkgrel=1
pkgdesc="Next generation distributed version control"
url="http://bazaar-vcs.org"
_F_makepkg_chkdep="python"
depends=('paramiko')
groups=('devel-extra')
archs=('i686' 'x86_64' 'ppc')
_F_archive_grepv="rc"
up2date="Flasttar http://bazaar-vcs.org/Download"
source=(https://launchpad.net/bzr/1.13/$pkgver/+download/bzr-$pkgver.tar.gz)
signatures=("${source[0]}.sig")

build()
{
	Fcd
	rm -f Makefile
	Fbuild
}

# optimization OK
