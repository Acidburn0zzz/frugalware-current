# Compiling Time: 0.66 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=valgrind
pkgver=3.2.3
pkgrel=1
pkgdesc="Tools for debugging and profiling Linux programs."
url="http://valgrind.org/"
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep Current|sed -n 's/.*-\(.*\)/\1/;$ p'"
source=($url/downloads/$pkgname-$pkgver.tar.bz2)

build()
{
    if [ "$CARCH" == "x86_64" ]; then
	Fbuild --enable-only64bit
    else
	Fbuild
    fi
}
sha1sums=('550195a913997ff15f12eea484bd3fe636b25472')
