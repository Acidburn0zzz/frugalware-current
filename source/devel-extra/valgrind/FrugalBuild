pkgname=valgrind
pkgver=3.3.0
pkgrel=1
pkgdesc="Tools for debugging and profiling Linux programs."
url="http://valgrind.org/"
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep Current|sed -n 's/.*-\(.*\)/\1/;$ p'"
source=($url/downloads/$pkgname-$pkgver.tar.bz2)
sha1sums=('e2d0f3bcb4e6dd4638ceeddc9da8603b32efdf11')

if [ "$CARCH" == "x86_64" ]; then
	Fconfopts="$Fconfopts --enable-only64bit"
fi
