pkgver=3.4.0
pkgrel=1
pkgdesc="Tools for debugging and profiling Linux programs."
url="http://valgrind.org/"
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64' 'ppc')
_F_archive_grepv="RC"
up2date="Flasttar $url/downloads/current.html"
source=($url/downloads/$pkgname-$pkgver.tar.bz2)
