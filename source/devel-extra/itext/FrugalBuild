# Compiling Time: 0.30 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=itext
pkgver=2.1.3
pkgrel=1
pkgdesc="A Java library that generate documents in the Portable Document Format (PDF) and/or HTML."
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_sourceforge_name="iText-src"
_F_sourceforge_broken_up2date=1
Finclude sourceforge java
depends=(${depends[@]} 'bcprov' 'bcmail' 'dom4j')
url="http://www.lowagie.com/iText/"
sha1sums=('6edb02f0e7b292a7c0168d7c872f67ce66df369b')
_F_cd_path="src"

build() {
	Fcd
	Fjavacleanup
	mkdir ../lib || Fdie
	Fant jar
	cd ../lib || Fdie
	Fjar iText.jar
}

