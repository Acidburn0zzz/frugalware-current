# Compiling Time: ~0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=cmucl
pkgver=19c
pkgrel=1
pkgdesc="A free implementation of the Common Lisp programming language"
url="http://www.cons.org/cmucl/"
depends=('glibc')
groups=('devel-extra')
archs=('i686' '!x86_64')
up2date="lynx -dump http://www.pmsf.de/pub/cmucl/release/|grep /$|sed -n 's|.*/\(.*\)/|\1|;$ p'"
source=(ftp://averillpark.net/cmucl/release/$pkgver/$pkgname-$pkgver-x86-linux.{tar.bz2,extra.tar.bz2} $pkgname.sh)
sha1sums=('098c13a7120499a7ff68d4992a76ef7b9442f8c0' \
	  'f7a3965cdb766165afc72c095c49ade6a581708a' \
	  'd830a6690155614e868c31de9019b4573cd1b3ee')

build() {
	Fmkdir /usr
	cp -R bin lib man $Fdestdir/usr/
	Fexe /etc/profile.d/$pkgname.sh
}
