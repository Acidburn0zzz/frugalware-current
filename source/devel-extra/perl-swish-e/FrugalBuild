pkgname=perl-swish-e
pkgver=2.4.4rc1
pkgrel=1
pkgdesc="Perl module for swish-e"
url="http://www.swish-e.org"
depends=('perl' 'swish-e')
groups=('devel-extra')
archs=('i686')
up2date="lynx -dump http://swish-e.org/download/index.html | grep -m2 tar.gz$ | sed 's/.*e-\(.*\).t.*/\1/' | tail -n1"
source=(http://www.swish-e.org/distribution/swish-e-$pkgver.tar.gz)
sha1sums=('4cf7aab344a097b34e19e74baa984b004a547d18')
_F_cd_path=swish-e-$pkgver

build()
{
	Fcd
	cd perl
	export LD_RUN_PATH=/usr/lib
	/usr/bin/perl Makefile.PL
	Fmakeinstall
}

# optimization OK
