# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=chicken
pkgver=3.1.10
pkgrel=1kalgan1
pkgdesc="A compiler for Scheme, which produces portable, efficient C."
url="http://www.call-with-current-continuation.org/"
depends=('glibc')
groups=('devel-extra')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump http://chicken.wiki.br/dev-snapshots/current/ |Flasttar"
source=(http://chicken.wiki.br/dev-snapshots/2008/04/26/$pkgname-$pkgver.tar.gz)
sha1sums=('875c624fa708d92c7ddb7a4b2a6382400b94a294')

build() {
	unset MAKEFLAGS
	Fsed '-Os' "$CFLAGS" Makefile.linux
	make PLATFORM=linux PREFIX=$Fprefix || Fdie
	make PLATFORM=linux PREFIX=$Fprefix DESTDIR=$Fdestdir install || Fdie
	Frm /usr/share/info
}

# optimization OK
