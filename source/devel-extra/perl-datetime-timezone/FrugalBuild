_F_perl_name=DateTime-TimeZone
_F_perl_author=D/DR/DROLSKY
pkgver=1.26
pkgdesc="Time zone object base class and factory"
depends=('perl-class-singleton' 'perl-params-validate')
groups=('devel-extra')
Finclude perl
archs=('i686' 'x86_64')
sha1sums=('16ec0d9dc6af4e8bcea4b8cf1b2526c472e1e56c')

build() {
	Fcd
	# Use Module::Build version of perl-5.10
	Fsed '0.3601' '0.340201' Build.PL
	perl Build.PL || Fdie
	./Build || Fdie
	./Build install destdir=$Fdestdir || Fdie
}
