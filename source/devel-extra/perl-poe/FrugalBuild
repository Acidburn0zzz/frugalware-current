pkgname=perl-poe
pkgver=1.363
pkgrel=1
pkgdesc="portable multitasking and networking framework for Perl"
_F_perl_name=POE
_F_perl_author=R/RC/RCAPUTO
Finclude perl
url="http://poe.perl.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
sha1sums=('b74a440192c46819886f6900e5d913bf332d9027')

build() {
	Fcd POE-$pkgver
        PERL_MM_USE_DEFAULT=1 perl Makefile.PL || Fdie
	make || Fdie
	Fmakeinstall
}
