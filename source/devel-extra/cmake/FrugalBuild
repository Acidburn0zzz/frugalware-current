pkgname=cmake
pkgver=3.5.2
pkgrel=1
pkgdesc="Cross platform make"
url="https://cmake.org/"
depends=('ncurses>=6.0-4' 'curl>=6.0-3' 'jsoncpp>=1.6.5' 'libarchive>=3.1.2-8')
rodepends=('libldap')
makedepends=('python-sphinx>=1.3.4-3' 'python-six' 'python-markupsafe>=0.23-2' 'gcc-g++>=5.3.0-2')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump -source https://cmake.org/download/ | grep -v rc | grep  -m1 'cmake-\(.*\).tar.gz' | sed 's/.*cmake-\(.*\).tar.*/\1/'"
source=(http://www.cmake.org/files/v${pkgver%.*}/$pkgname-$pkgver.tar.gz)
sha1sums=('5d6c68c3007d61cadd6257c170e60aa67154cda1')
Fconfopts="$Fconfopts \
	--system-libs \
	--prefix=$Fdestdir/usr \
	--mandir=/share/man \
	--docdir=/share/doc/cmake \
	--sphinx-man"
_F_conf_configure="./bootstrap"
options+=('noccache')

