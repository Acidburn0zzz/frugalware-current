options+=('asneeded')

pkgname=cmake
pkgver=3.2.2
pkgrel=2
pkgdesc="Cross platform make"
url="http://www.cmake.org/"
depends=('ncurses' 'curl' 'jsoncpp')
makedepends=('python-sphinx' 'python-markupsafe')
groups=('devel-extra')
archs=('i686' 'x86_64' 'arm')
_F_archive_grepv="Linux\|Darwin\|rc"
up2date="Flasttar $url/download"
source=(http://www.cmake.org/files/v3.2/$pkgname-$pkgver.tar.gz)
sha1sums=('d22be01828508027617494c8b59d5999d4c1490e')
Fconfopts="$Fconfopts \
	--system-libs \
	--enable-ccache \
	--prefix=$Fdestdir/usr \
	--mandir=/share/man \
	--docdir=/share/doc/cmake \
	--sphinx-man"
_F_conf_configure="./bootstrap"

# optimization OK
