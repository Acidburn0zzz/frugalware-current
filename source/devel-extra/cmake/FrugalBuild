options+=('asneeded')

pkgname=cmake
pkgver=3.3.1
pkgrel=2
pkgdesc="Cross platform make"
url="http://www.cmake.org/"
depends=('ncurses' 'curl>=7.44.0-2' 'jsoncpp')
makedepends=('python-sphinx' 'python-markupsafe')
groups=('devel-extra')
archs=('i686' 'x86_64' 'arm')
up2date="Flasttar $url/files/v3.3/"
source=(http://www.cmake.org/files/v3.3/$pkgname-$pkgver.tar.gz)
sha1sums=('799aff559e9f330fefc60e6509f1d025fc3d9c8c')
Fconfopts="$Fconfopts \
	--system-libs \
	--enable-ccache \
	--prefix=$Fdestdir/usr \
	--mandir=/share/man \
	--docdir=/share/doc/cmake \
	--sphinx-man"
_F_conf_configure="./bootstrap"

# optimization OK
