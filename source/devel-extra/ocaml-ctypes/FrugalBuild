# Compiling Time: 0.06 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=ocaml-ctypes
pkgver=0.11.1
pkgrel=1
pkgdesc='Library for binding to C libraries using pure OCaml'
archs=('i686' 'x86_64')
license=('custom')
depends=('ocaml>=4.03.0-2' 'libffi>=3.2.1-2')
makedepends=('ocaml-findlib>=1.6.2-3')
options=('nostrip')
groups=('devel-extra')
_F_github_author="ocamllabs"
_F_github_name="$pkgname"
_F_github_tag="y"
Finclude github
options=('nostrip')
sha1sums=('9a6a27af9c04e7bfce0d5e1048b2159dc7409258')
_F_make_opts="-j1"

build(){
	Fcd
	unset MAKEFLAGS
	Fmake

	Fmkdir usr/lib/ocaml/ctypes
	export OCAMLFIND_DESTDIR="${Fdestdir}$(ocamlfind printconf destdir)"
	export OCAMLFIND_LDCONF=ignore
	Fmakeinstall
}

# optimization OK
