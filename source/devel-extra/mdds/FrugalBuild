# Compiling Time: 1.64 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=mdds
pkgver=1.2.1
pkgrel=2
pkgdesc="A collection of multi-dimensional data structure and indexing algorithm."
_F_googlecode_dirname="multidimalgorithm"
Finclude googlecode
depends=()
makedepends=('boost>=1.61.0' 'valgrind')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="Flasttar https://gitlab.com/mdds/mdds"
source=(http://kohei.us/files/mdds/src/mdds-$pkgver.tar.bz2)
sha1sums=('cecb959f58b1ecc93630ff14b019d44e01f041a9')

build()
{
	Fmake
	make check || return 1
	Fmakeinstall
	Fmkdir /usr/lib/
	Fmv /usr/share/pkgconfig /usr/lib/
}

# optimization OK
