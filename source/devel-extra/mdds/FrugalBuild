pkgname=mdds
pkgver=0.10.1
pkgrel=1
pkgdesc="A collection of multi-dimensional data structure and indexing algorithm."
_F_googlecode_dirname="multidimalgorithm"
Finclude googlecode
depends=()
makedepends=('boost>=1.50.0' 'valgrind')
groups=('devel-extra')
archs=('i686' 'x86_64')
Fpkgversep=_
up2date="lynx -dump http://dev-www.libreoffice.org/src|grep mdds_|sed 's/.*mdds_\(.*\)\.t.*/\1/'|Fsort |tail -n 1"
source=(http://dev-www.libreoffice.org/src/01a380acfec23bf617117ce98e318f3d-mdds_$pkgver.tar.bz2)
sha1sums=('199e609afa5ae08d164754f7a0a54b01f88692d0')

build()
{
	Fmake
	make check || return 1
	Fmakeinstall
}
