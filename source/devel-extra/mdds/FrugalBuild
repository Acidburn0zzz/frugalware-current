pkgname=mdds
pkgver=1.2.2
pkgrel=1
pkgdesc="A collection of multi-dimensional data structure and indexing algorithm."
_F_googlecode_dirname="multidimalgorithm"
Finclude googlecode
depends=()
makedepends=('boost>=1.61.0-4' 'valgrind')
groups=('devel-extra')
archs=('x86_64')
up2date="Flasttar https://gitlab.com/mdds/mdds"
source=(http://kohei.us/files/mdds/src/mdds-$pkgver.tar.bz2)
sha1sums=('3d2e5fc0e00650cdd3c385ebacacb15bd364ea4f')

build()
{
	Fmake
	make check || Fdie
	Fmakeinstall
	Fmkdir /usr/lib/
	Fmv /usr/share/pkgconfig /usr/lib/
}

# optimization OK
