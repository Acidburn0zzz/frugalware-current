pkgname=bwidget
pkgver=1.7.0
pkgrel=1
pkgdesc="BWidget is a Tcl/Tk script-only set of megawidgets designed to provide the developer additional tools."
url="http://wiki.tcl.tk/2251"
depends=('tk')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=12883'|grep -m 1 -o 'BWidget-[0-9\.]\+[0-9]'|grep -o '[0-9\.]\+[0-9]'"
source=(http://heanet.dl.sourceforge.net/sourceforge/tcllib/BWidget-$pkgver.tar.gz)
sha1sums=('7ef91ea6092d46d4c202680c1debfa380ca44e03')

build() {
    mkdir -p $startdir/pkg/usr/lib/tcl8.4/bwidget$pkgver
    cp -r $startdir/src/BWidget-$pkgver/* $startdir/pkg/usr/lib/tcl8.4/bwidget$pkgver
}

