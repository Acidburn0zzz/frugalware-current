pkgname=rake
pkgver=0.7.3
pkgrel=1
pkgdesc="Make-like scripting in Ruby"
url="http://rake.rubyforge.org/"
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude gem
sha1sums=('d8e1f09f119b405679b9289cfad3723cddf18432')

build() {
	Finstallgem
	sed -i -e "s|^\(begin\)$|#!/usr/bin/env ruby\n\n\1|" "$Fdestdir"/usr/bin/rake
}

# optimalization OK

