_F_perl_name=Module-Build
_F_perl_author=L/LE/LEONT
pkgver=0.4222
pkgrel=1
pkgdesc="Build and install Perl modules"
depends=('perl-inc-latest')
Finclude perl
archs=('x86_64')
sha1sums=('af7fb66a2706a714e8180c82b662170e7a6cb9c8')

build()
{
	## weird
	Fcd Module-Build-$pkgver
	perl Build.PL  || Fdie
	perl Build || Fdie
	perl Build install destdir=$Fdestdir || Fdie
	Ffix_perl

}
