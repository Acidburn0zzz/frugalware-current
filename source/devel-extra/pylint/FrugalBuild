pkgname=pylint
pkgver=1.8.2
pkgrel=2
pkgdesc="Python code checker."
url="http://www.logilab.org/project/pylint"
depends=('astroid' 'python-mccabe' 'python-isort')
makedepends=('python-distribute')
groups=('devel-extra')
archs=('x86_64')
_F_python_version=python3
Finclude pypi
sha1sums=('be78633a3de6fd85c4a5bfa8ae321899966035a7')

subpkgs=("python3-pylint")
subdescs=('Python 3 code checker')
subdepends=('python3-astroid python3-mccabe python3-isort')
subrodepends=('')
subgroups=('devel')
subarchs=('x86_64')


build() {
	Fcd
	#Python3
	Fexec python3 setup.py install --root=$Fdestdir --optimize=1 || Fdie
	Fsplit python3-pylint usr/lib

	#Python2
	Fexec python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}
