# Compiling Time: 0.02 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=certifi
pkgver=2017.11.5
pkgrel=1
pkgdesc="Python package for providing Mozilla's CA Bundle"
groups=('devel-extra')
archs=('x86_64')
depends=('python')
Finclude pypi
_F_cd_path="$_F_pypi_name-$pkgver"
sha1sums=('8e4574685163771ee40604d7dd89fe60b9461790')

subpkgs=("python3-$pkgname")
subdescs=("Python 3 package for providing Mozilla's CA Bundle.")
subdepends=('python3>=3.5.2-2')
subrodepends=('')
subgroups=('devel')
subarchs=('x86_64')

build() {
        Fcd
	#Python3
        Fexec python3 setup.py install --root=$Fdestdir --optimize=1 || Fdie
        Fsplit python3-$pkgname usr/lib
        #Python2
        Fexec python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}
