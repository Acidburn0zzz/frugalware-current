# Compiling Time: 0.81 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qbs
pkgver=1.8.0
pkgrel=2
pkgdesc="A tool that helps simplify the build process for developing projects across multiple platforms"
url="http://doc.qt.io/qbs/index.html"
depends=('qt5-script>=5.9.0' 'qt5-base>=5.9.0-3')
groups=('devel-extra')
archs=('x86_64')
up2date="lynx --dump http://doc.qt.io/qbs/index.html | egrep 'Version\ [\.0-9]+' | sed 's/Version\ \([0-9\.]*\)/\1/'"
source=(https://download.qt.io/official_releases/qbs/${pkgver}/qbs-src-${pkgver}.tar.gz)
sha1sums=('5c93d820889b8061414b48e870f3e67c56252946')
_F_cd_path=qbs-src-${pkgver}


build() {
	Fcd
    	qmake-qt5 -r QBS_INSTALL_PREFIX=/usr QBS_LIBEXEC_INSTALL_DIR=/usr/lib/qbs \
		QBS_RELATIVE_LIBEXEC_PATH=../lib/qbs  CONFIG+=qbs_enable_project_file_updates qbs.pro || Fdie
    	Fmake
    	INSTALL_ROOT="$Fdestdir" make install || Fdie
}

# optimization OK
