# Compiling Time: 0.06 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=bam
pkgver=0.2.0
pkgrel=2
pkgdesc="Bam is a fast and flexible build system."
url="http://teeworlds.com/trac/bam"
depends=('lua')
groups=('devel-extra')
options=('force')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | Flasttar"
source=($url/browser/releases/$pkgname-$pkgver.tar.gz?format=raw)
sha1sums=('99d86db750fe18ea5b25493850122929bd2c674b')

build() {
	mv $pkgname-$pkgver.tar.gz?format=raw $pkgname-$pkgver.tar.gz || Fdie
	Fextract $pkgname-$pkgver.tar.gz
	Fcd
	sh make_unix.sh || Fdie
	Fexerel src/$pkgname /usr/bin/$pkgname
	Fdocrel license.txt
	Fdocrel docs/actions.txt
	Fdocrel docs/bam.1.txt
	Fdocrel docs/bam_logo.png
	Fdocrel docs/building.txt
	Fdocrel docs/introduction.txt
	Fdocrel docs/quickstart.txt
	gzip docs/$pkgname.1.txt || Fdie
	Fmkdir usr/share/man/man1
	Finstallrel 644 docs/$pkgname.1.txt.gz  usr/man/man1/$pkgname.1.gz
}

