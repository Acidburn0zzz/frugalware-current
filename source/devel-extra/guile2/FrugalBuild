pkgname=guile2
_F_archive_name="guile"
pkgver=2.0.3
pkgrel=1
pkgdesc="Guile is a portable, embeddable Scheme implementation written in C"
url="http://www.gnu.org/software/guile/"
depends=('gmp>=5.0.1' 'readline' 'libtool>=2.2.2' 'libunistring' 'libgc')
groups=('devel-extra')
archs=('i686' 'x86_64')
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$_F_archive_name-$pkgver.tar.gz)
up2date="Flasttar 'http://ftp.gnu.org/gnu/$_F_archive_name/?C=M;O=A'"
sha1sums=('f555b811fa06ec15c07fc8f17acf806452ea98a0')
#Fconfopts="$Fconfopts \
#        --disable-networking \
#        --with-threads \
#        --disable-error-on-warning"

build() {
	Fcd
	./configure --prefix=/usr
	make LDFLAGS+="-lpthread"
	Fmakeinstall
}


# optimization OK
