# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=gnu-efi
pkgver=3.0k
pkgrel=1
pkgdesc="EFI Development Environment for x86/x86_64."
depends=()
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_sourceforge_sep='_'
_F_sourceforge_ext='.orig.tar.gz'
Finclude sourceforge
sha1sums=('31991130068447ecdefd3b2204df01c18638c2d1')

build()
{
	Fcd $pkgname-3.0
	Fsed "-O2" "$CFLAGS" Make.defaults
	Fexec make
	Fexec make INSTALLROOT="$Fdestdir/usr" install
}

# optimization OK
