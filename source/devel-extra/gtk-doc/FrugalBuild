pkgname=gtk-doc
pkgver=1.26
pkgrel=1
pkgdesc="Used to document the public API of libraries"
url="http://www.gnome.org/"
depends=('openjade' 'docbook-xsl' 'yelp-tools' 'source-highlight' 'perl')
makedepends=('pkgconfig' 'itstool')
groups=('devel-extra')
archs=('x86_64')
_F_gnome_ext=".tar.xz"
_F_gnome_devel="y"
Finclude gnome
sha1sums=('a34d5c4730c64c164d34dd3b16ed30f6e2451b1d')

build(){
	Fcd
	Fsed '$(datadir)/pkgconfig' '$(libdir)/pkgconfig' Makefile.{am,in}
	Fbuild
}


# optimization OK
