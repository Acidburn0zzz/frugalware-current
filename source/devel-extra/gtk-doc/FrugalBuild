pkgname=gtk-doc
pkgver=1.25
pkgrel=1
pkgdesc="Used to document the public API of libraries"
url="http://www.gnome.org/"
depends=('openjade' 'docbook-xsl' 'yelp-tools' 'source-highlight' 'perl')
makedepends=('pkgconfig' 'itstool')
groups=('devel-extra')
archs=('i686' 'x86_64' 'arm')
_F_gnome_ext=".tar.xz"
_F_gnome_devel="y"
Finclude gnome
sha1sums=('bd93ff19403805b4faddcd86b58a6f338ce1fd6d')

build(){
	Fcd
	Fsed '$(datadir)/pkgconfig' '$(libdir)/pkgconfig' Makefile.{am,in}
	Fbuild
}


# optimization OK
