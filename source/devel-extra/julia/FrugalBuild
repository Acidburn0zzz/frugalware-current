# Compiling Time: 20 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=julia
pkgver=0.5.0
pkgrel=1
pkgdesc="High-level, high-performance dynamic programming language for technical computing."
depends=('libgfortran' 'gmp' 'libgit2>=0.25.0' 'libunwind' 'pcre2')
makedepends=('gcc-gfortran' 'git')
groups=('devel-extra')
archs=('x86_64')
_F_github_tag_v="y"
_F_github_author="JuliaLang"
_F_gnome_iconcache="y"
Finclude github
sha1sums=('1d1eaa07bb63c8df4fabedc2e761569c2c62f644')

build() {

	Fcd
	Fmakeinstall prefix=$Fprefix sysconfdir=/etc \
		MARCH=${CARCH/_/-} \
		USE_SYSTEM_LLVM=0 \
		USE_SYSTEM_READLINE=1 \
		USE_SYSTEM_PCRE=1 \
		USE_SYSTEM_LIBM=1 \
		USE_SYSTEM_GMP=1 \
		USE_SYSTEM_LIBGIT2=1 \
		USE_SYSTEM_LIBUNWIND=1 \
		USE_SYSTEM_MPFR=1 \
		USE_SYSTEM_ZLIB=1 \
		USE_MKL=0 \
		USE_LLVM_SHLIB=0
}

# optimization OK
