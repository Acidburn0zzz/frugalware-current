# Compiling Time: 0.01 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=docutils
pkgver=0.12
pkgrel=2
pkgdesc="Documentation Utilities"
Finclude sourceforge
depends=('python-distribute>=0.6.49-3')
groups=('devel-extra')
archs=('i686' 'x86_64')
sha1sums=('002450621b33c5690060345b0aac25bc2426d675')

build()
{
	Fbuild
	cd $Fdestdir/usr/bin
	for i in *.py
	do
		ln -s $i `basename $i .py`
	done
}

# optimization OK
