# Compiling Time: 0.01 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=docutils
pkgver=0.6
pkgrel=1
pkgdesc="Documentation Utilities"
Finclude sourceforge
depends=('setuptools')
groups=('devel-extra')
archs=('i686' 'x86_64' 'ppc')
sha1sums=('1b3bfc3bdf285c208dd0c29427fd6b096569aa92')

build()
{
	Fbuild
	cd $Fdestdir/usr/bin
	for i in *.py
	do
		ln -s $i `basename $i .py`
	done
}
