# Last Modified: Wed, 05 Apr 2006 18:23:25 +0000
# Compiling Time: ~1.4 SBU
# Maintainer: Miklos Nemeth <desco@frugalware.org>

pkgname=wxpython-u8
pkgver=2.6.3.2
pkgrel=2
pkgdesc="wxPython GUI toolkit unicode version"
url="http://www.wxpython.org/"
depends=('wxgtk-u8' 'python')
makedepends=('wxgtk')
groups=('devel-extra')
archs=('x86_64' 'i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=10718 |grep wxPython-src-[0-9\.]*.tar.gz |sed -n 's/.*-\([0-9\.]*\)\.t.*/\1/; 1 p'"
source=(http://heanet.dl.sourceforge.net/wxpython/wxPython-src-$pkgver.tar.gz)
sha1sums=('2f845459e089c615e15ac165b5135b688b9d62cf')

build()
{
	Fcd wxPython-src-$pkgver/wxPython
	Fmake BUILD_GLCANVAS=0 BUILD_STC=1 BUILD_GIZMOS=1 BUILD_ANIMATE=1 UNICODE=1 WX_CONFIG='wx-config-u8'
	Fmakeinstall BUILD_GLCANVAS=0 BUILD_STC=1 BUILD_GIZMOS=1 BUILD_ANIMATE=1 UNICODE=1 WX_CONFIG='wx-config-u8'
	rm -rf $Fdestdir/usr/bin $Fdestdir/usr/include
	cd $Fdestdir/usr/lib/python2.4/site-packages
	rm wxversion.* wx.pth
}

# optimalization ok

