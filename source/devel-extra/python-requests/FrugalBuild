pkgname=python-requests
_F_archive_name="requests"
pkgver=2.18.3
pkgrel=2
pkgdesc="Python HTTP for Humans."
depends=('python>=2.7' 'python-idna>=2.6')
makedepends=('python-distribute')
groups=('devel-extra')
archs=('x86_64')
_F_pypi_name="requests"
Finclude pypi
source+=(https://github.com/requests/requests/commit/9ec2005d9f6540761a4525396aa1a593b09d419a.patch)
sha1sums=('877777f790b9e18a5d808ea3906da72aef1830fd' \
          'a3f67814a2a3c702f9f4be397302cf1a90ef783e')

build() {
	Fcd
	Fpatchall
	Fexec python setup.py install --root="$Fdestdir" -O1 || Fdie
}
