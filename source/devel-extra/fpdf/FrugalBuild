# Compiling Time: 0 SBU
# Maintainer: CSÉCSY László <boobaa@frugalware.org>

pkgname=fpdf
pkgver=153
pkgrel=1
pkgdesc="A PHP class which allows to generate PDF files with pure PHP"
url="http://www.fpdf.org/"
rodepends=('php')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/en/download.php | grep -m1 'http.*tgz' | sed 's/.*v=\(.*\)&.*/\1/'"
source=("http://frugalware.org/~boobaa/stuff/$pkgname$pkgver.tgz")

build() {
	Fcd $pkgname$pkgver
	Ffilerel /usr/lib/php/$pkgname/fpdf.php
	Fcprrel font /usr/lib/php/$pkgname/
	Fdocrel doc
	Fdocrel tutorial
	Fdocrel histo.htm
	Fdocrel FAQ.htm
	Fdocrel fpdf.css
	Ffilerel install.txt usr/share/doc/$pkgname-$pkgver/README
	Ffileschmod usr/ 644
}

sha1sums=('a57735030f9c93f8d249462cd2ab7dd0b91575e9')
