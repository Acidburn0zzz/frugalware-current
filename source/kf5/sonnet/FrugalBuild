pkgname=sonnet
pkgrel=3
pkgdesc="Spelling framework for Qt, plugin-based."
groups=('kf5')
archs=('i686' 'x86_64')
_F_kde_project="frameworks"
Finclude kf5
depends=("qt5-base>=$_F_kde_qtver" 'enchant')
makedepends=("${makedepends[@]}" 'qt5-x11extras' 'qt5-tools')
sha1sums=('5634e8b7b4c259b81686a3108be10587e35fc96f')

replaces=('sonnet-plugin-enchant')
conflicts=("${replaces[@]}")

subpkgs=('sonnet-plugin-aspell' 'sonnet-plugin-hspell')
subdescs=('Aspell plugin for sonnet' 'Hspell plugin for sonnet')
subarchs=('i686 x86_64' 'i686 x86_64')
subdepends=('aspell' 'hspell')
subgroups=('kde5-extra' 'kde5-extra')

build() {
	KDE_build

	Fsplit sonnet-plugin-aspell usr/lib/qt5/plugins/kf5/sonnet/aspell.so
	Fsplit sonnet-plugin-hspell usr/lib/qt5/plugins/kf5/sonnet/hspell.so
}

# optimization OK
