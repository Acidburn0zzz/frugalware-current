pkgname=shared-mime-info
pkgver=1.5
pkgrel=2
pkgdesc="Freedesktop.org Shared MIME Info"
url="http://freedesktop.org/Software/shared-mime-info"
depends=('libxml2>=2.9.3-3' 'glib2>=2.46.2-4')
makedepends=('intltool>=0.51.0-2')
groups=('xlib')
archs=('i686' 'x86_64' 'arm')
up2date="Flasttar http://freedesktop.org/~hadess/"
source=(http://freedesktop.org/~hadess/$pkgname-$pkgver.tar.xz)
sha1sums=('2252f9093e72f2dc81b47d4f2a3eda50d19f0f70')
Fconfopts+=" --disable-update-mimedb"
unset MAKEFLAGS


build() {
	Fcd
	export ac_cv_func_fdatasync=no
	Fsed '$(datadir)/pkgconfig' '$(libdir)/pkgconfig' Makefile.{am,in}
	Fbuild

}
# optimization OK
