pkgname=swfdec
pkgver=0.5.0
pkgrel=1
pkgdesc="Swfdec is a decoder/renderer library for Macromedia Flash animations.."
url="http://swfdec.freedesktop.org/"
license="LGPL"
depends=('libmad' 'gtk+2' 'liboil' 'ffmpeg>=20070422' 'alsa-lib' 'faad2' 'gstreamer')
options=('scriptlet')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep -m1 'Swfdec [0-9]' | sed 's/.*Swfdec \(.*\) is.*/\1/'"
source=($url/download/$pkgname/0.5/$pkgname-$pkgver.tar.gz)
Fconfopts="${Fconfopts[@]} --enable-gnome-vfs=no"
sha1sums=('cf9a2b5e25c81cd4be4e962a510ac326a651937e')

# optimization OK
