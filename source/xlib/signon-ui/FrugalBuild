pkgname=signon-ui
pkgver=0.15
pkgrel=1
pkgdesc="D-Bus service used to provide a UI for authenticating online accounts"
groups=('xlib')
archs=('i686' 'x86_64')
depends=('qt5-webkit' 'libnotify' 'libaccounts-qt' 'signon')
makedepends=('qt5-base')
url="https://gitlab.com/accounts-sso/signon-ui/"
up2date="$pkgver"
source=( https://gitlab.com/accounts-sso/signon-ui/repository/archive.zip damn-compile.patch)
sha1sums=('49355238b8dece61cd3526927ebe7b14644388f0' \
          'ce71a1244be1030a825398a8112a0bc58ac445bd')

build(){

	Fcd signon-ui-master-075830f31096947fcea70802b8d3c142bccfbefa
	Fpatchall
	qmake-qt5 || Fdie
	make || Fdie
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
