pkgname=qca-tls
pkgver=1.0
pkgrel=1
pkgdesc="QCA plugins: SSL/TLS, X509, RSA, SHA1, MD5, Blowfish, 3DES, AES"
url="http://delta.affinix.com/qca/"
groups=('xlib')
archs=('i686' 'x86_64')
license="LGPL"
depends=('qt' 'openssl' 'gcc')
source=(http://delta.affinix.com/qca/$pkgname-$pkgver.tar.bz2 00-qca-tls-gcc4.patch0)
md5sums=('886b1f60fc31de3b1a0bd93281e27b73' '748e9f8dada9b29e735339907da55943')
up2date="lynx -dump $url |grep qca-tls |sed -ne 's/.*s-\(.*\).t.*/\1/;1 p'"

build() {
	Fcd
	Fpatchall
	./configure
	make || return 1
	Fmakeinstall INSTALL_ROOT=$Fdestdir
}

# optimalization OK

