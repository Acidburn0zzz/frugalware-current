pkgname=fnlib
pkgver=0.5
pkgrel=3
pkgdesc="Font rendering library for X11"
depends=('libxext' 'imlib' 'libpng')
groups=('xlib')
archs=('i686' 'x86_64')
url="http://enlightenment.org"
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=2 |grep fnlib-src |sed 's/.*]\([0-9\.]*\) [A-Z].*/\1/;q'"
source=(http://heanet.dl.sourceforge.net/sourceforge/enlightenment/$pkgname-$pkgver.tar.gz)
sha1sums=('0dd7053e443ea5d22e4864fe6997b77901118335')

build()
{
	Fbuild --sysconfdir=/etc/fnlib
}

# optimalization OK
