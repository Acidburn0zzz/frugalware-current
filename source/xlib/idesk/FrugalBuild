# Maintainer: Shrift <shrift@frugalware.org>

pkgname=idesk
pkgver=0.7.3
pkgrel=1
pkgdesc="You can use icons on your desktop with Idesk"
url="http://idesk.sourceforge.net"
depends=('imlib2' 'startup-notification')
groups=('xlib')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=83307|grep -m1 '.tar.bz2'|sed 's/.*-\(.*\).t.*/\1/'"
sha1sums=('14aed344959a9a66d21c585ce2bd1e04b71211e6')

build()
{
	Fmake --enable-libsn
	Ffilerel examples/dot.ideskrc /usr/share/idesk/dot.ideskrc
	Fexerel src/$pkgname /usr/bin/$pkgname
}

# optimalization OK
