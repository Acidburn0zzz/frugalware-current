# Compiling Time: 1.43 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=djvulibre
pkgver=3.5.23
pkgrel=1
pkgdesc="DjVu is a web-centric format for distributing documents and images."
depends=('libtiff' 'libjpeg>=8a')
rodepends=('xdg-utils')
groups=('xlib')
archs=('i686' 'x86_64' 'ppc')
_F_sourceforge_dirname="djvu"
Finclude sourceforge
url="http://djvulibre.djvuzone.org/"
sha1sums=('b19f6b461515a52eb1048aec81e04dfd836d681f')

build()
{
	Fcd $pkgname-`echo $pkgver|sed 's/_.*//'`
	unset MAKEFLAGS
	export CFLAGS="$CFLAGS"
	export CXXFLAGS="$CXXFLAGS"
	Fconf \
		--enable-threads \
		--enable-desktopfiles \
		--enable-xmltools \
		--disable-djview
	make depend || Fdie
	make || Fdie
	Fmakeinstall
}

# optimization OK

