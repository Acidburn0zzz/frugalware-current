# Compiling Time: 0.20 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=djvulibre
pkgver=3.5.27
pkgrel=4
pkgdesc="DjVu is a web-centric format for distributing documents and images."
depends=('libtiff>=4.0.6-2' 'libjpeg>=9a-2' 'libstdc++>=6.2.1-5')
rodepends=('xdg-utils')
groups=('xlib')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="djvu"
Finclude sourceforge
url="http://djvulibre.djvuzone.org/"
sha1sums=('99c4f2c621c063bf8c8a1626030539fe5a8675f9')


build()
{
	Fcd
	Fsed 'O3' 'O2' configure
	Fbuild \
		--enable-threads \
		--enable-desktopfiles \
		--enable-xmltools \
		--disable-djview
}

# optimization OK

