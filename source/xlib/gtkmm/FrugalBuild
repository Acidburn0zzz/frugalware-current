pkgname=gtkmm
pkgver=2.16.0
pkgrel=2
pkgdesc="C++ interface for GTK+2"
depends=('glibmm>=2.18.1' 'gtk+2>=2.16.2-2' 'cairomm>=1.8.0' 'pangomm>=2.24.0')
groups=('xlib')
archs=('i686' 'x86_64' 'ppc')
Finclude gnome
Fconfopts="$Fconfopts --disable-examples --disable-demos"
sha1sums=('e8cde1ebf651458c815d5e896bbae2ae4bf33d67')

export CXXFLAGS="$CXXFLAGS -fno-strict-aliasing"

subpkgs=("$pkgname-docs")
subdescs=("Gtkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64 ppc')

build()
{
        Fbuild
        Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
