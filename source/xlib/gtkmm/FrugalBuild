pkgname=gtkmm
pkgver=3.20.0
pkgrel=1
pkgdesc="C++ interface for GTK+3"
depends=('glibmm>=2.48.0' 'gtk+3>=3.20.1' 'cairomm>=1.12.0-2' 'pangomm>=2.40.0' \
	'atkmm>=2.24.2-2' 'libstdc++>=5.3.0-2')
groups=('xlib')
archs=('i686' 'x86_64')
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome
Fconfopts+=" --disable-examples --disable-demos"
sha1sums=('3f3ed97709546dd2f3623d64a2d7d0952ee6c3da')

CXXFLAGS+=" -fno-strict-aliasing"

subpkgs=("$pkgname-docs")
subdescs=("Gtkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64')

build()
{
        Fbuild
        Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
