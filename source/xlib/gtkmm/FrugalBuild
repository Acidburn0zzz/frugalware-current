pkgname=gtkmm
pkgver=2.12.3
pkgrel=1
pkgdesc="C++ interface for GTK+2"
depends=('glibmm>=2.14.1-2' 'gtk+2>=2.12.1' 'cairomm>=1.4.6')
groups=('xlib')
archs=('i686' 'x86_64')
Finclude gnome
Fconfopts="$Fconfopts --disable-examples --disable-demos"
sha1sums=('6583cab0ced0e745e996d8606fca614cefc6c9f6')

export CXXFLAGS="$CXXFLAGS -fno-strict-aliasing"

subpkgs=("$pkgname-docs")
subdescs=("Gtkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64')

build()
{
        Fbuild
        Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
