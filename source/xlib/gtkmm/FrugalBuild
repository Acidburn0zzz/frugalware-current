options+=('asneeded')

pkgname=gtkmm
pkgver=3.17.90
pkgrel=1
pkgdesc="C++ interface for GTK+3"
depends=('libxml2>=2.7.8' 'glibmm>=2.45.80' 'gtk+3>=3.17.8' 'cairomm>=1.11.4' 'pangomm>=2.37.2' 'atkmm>=2.23.1')
groups=('xlib')
archs=('i686' 'x86_64')
_F_gnome_devel="y"
_F_gnome_ext=".tar.xz"
Finclude gnome
Fconfopts+=" --disable-examples --disable-demos"
sha1sums=('43526f64fe68cce87f9136145e62168f05899d37')

export CXXFLAGS="$CXXFLAGS -fno-strict-aliasing"

subpkgs=("$pkgname-docs")
subdescs=("Gtkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64')

build()
{
        Fbuild
        Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
