pkgname=gtkmm
pkgver=3.18.0
pkgrel=4
pkgdesc="C++ interface for GTK+3"
depends=('glibmm>=2.46.3-2' 'gtk+3>=3.18.6-2' 'cairomm>=1.12.0-2' 'pangomm>=2.38.1-2' \
	'atkmm>=2.24.2-2' 'libstdc++>=5.3.0-2')
groups=('xlib')
archs=('i686' 'x86_64')
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome
Fconfopts+=" --disable-examples --disable-demos"
sha1sums=('f2c9f48e9e9b5e42df0d2c851663285e47f7ba12')

CXXFLAGS+=" -fno-strict-aliasing"

subpkgs=("$pkgname-docs")
subdescs=("Gtkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64')

build()
{
        Fbuild
        Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
