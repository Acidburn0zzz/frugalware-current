# Compiling Time: 0.10 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=sdl_ttf
pkgver=2.0.8
pkgrel=1
pkgdesc="SDL_ttf is a TrueType font rendering library."
url="http://www.libsdl.org/projects/SDL_ttf"
depends=('sdl' 'freetype2' 'mesa')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep -m1 '.tar.gz$'|sed 's/.*-\(.*\).t.*/\1/'"
source=($url/release/SDL_ttf-$pkgver.tar.gz)
sha1sums=('a2c4cb1525173414ca7e5eaefbabadca69bd1114')

build()
{
	Fcd SDL_ttf-$pkgver
	Fbuild --with-gnu-ld --with-x
}


# optimization OK
