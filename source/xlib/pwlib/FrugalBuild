pkgname=pwlib
pkgver=1.10.1
pkgrel=1
pkgdesc="Portable Windows Library"
url="http://ekiga.org"
groups=('xlib')
archs=('i686' 'x86_64')
depends=('openldap' 'sdl')
makedepends=('alsa-lib' 'libdv' 'libavc1394' 'esd' 'aalib')
source=(http://www.ekiga.org/admin/downloads/latest/sources/sources/$pkgname-$pkgver.tar.gz)
sha1sums=('104e7fe42661b410749d19c90803715734bc1e3b')
up2date="lynx -dump 'http://www.ekiga.org/index.php?rub=5&path=sources/sources' | grep pwlib | Flasttar"

build() {
	Fbuild --libdir=/usr/lib --enable-ipv6 --enable-v4l \
		--enable-avc --enable-plugins \
		--enable-v4l2 --enable-oss \
		--enable-sdl
}

# optimization OK
