up2date="lynx -dump http://tango-project.org/releases/|grep -v 'tango-icon-theme-extras' |grep 'tango-icon-theme'|sort -r -n|grep -m1 '.tar.gz'|sed 's/.*-\(.*\).tar.gz/\1/'"
source=(http://tango-project.org/releases/$pkgname-$pkgver.tar.gz \
		$pkgname-configure.patch)
