pkgname=libquicktime
pkgver=1.1.4
pkgrel=1
pkgdesc="A library based on quicktime4linux with extensions"
depends=('lame' 'gtk+2>=2.18.6' 'alsa-lib' 'libdv' 'libvorbis' 'libavc1394' 'faac>=1.25' 'faad2>=2.7' 'ffmpeg>=20090403' 'libraw1394>=2.0.0')
makedepends=('cvs' 'doxygen')
groups=('xlib')
archs=('x86_64' 'i686' 'ppc')
options=('scriptlet')
Finclude sourceforge
url="http://libquicktime.sourceforge.net/"
sha1sums=('6c5d902e0b2cadd82d190e4643e9f706e2f10238')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake --enable-gpl --with-cpuflags=no
	Fmakeinstall
}

# optimization OK
