pkgname=libquicktime
pkgver=1.1.5
pkgrel=4
pkgdesc="A library based on quicktime4linux with extensions"
depends=('lame' 'gtk+2>=2.20.0-2' 'alsa-lib' 'libdv' 'libvorbis' 'libavc1394' 'faac>=1.25' 'faad2>=2.7' 'ffmpeg>=0.6' 'libraw1394>=2.0.0')
makedepends=('cvs' 'doxygen')
groups=('xlib')
archs=('x86_64' 'i686' 'ppc')
options=('scriptlet')
Finclude sourceforge
url="http://libquicktime.sourceforge.net/"
sha1sums=('11dad92fe9dbb67aa8ef42c3404d3acba7ae2a37')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake --enable-gpl --with-cpuflags=no
	Fmakeinstall
}

# optimization OK
