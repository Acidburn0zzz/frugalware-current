pkgname=libquicktime
pkgver=1.2.4
pkgrel=19
pkgdesc="A library based on quicktime4linux with extensions"
depends=('ffmpeg>=3.3.2')
makedepends=('x11-protos')
groups=('xlib')
archs=("x86_64")
options=('scriptlet')
Finclude sourceforge
source=(${source[@]} fixes.patch ffmpeg-2.x.patch libquicktime-ffmpeg3.patch)
sha1sums=('7008b2dc27b9b40965bd2df42d39ff4cb8b6305e' \
          '541a57c3c9c9aa21c84c87ce10c9cc3b27f8bca4' \
          '6f21a5dbeb954704dc1dbc4fc9c0e1c658220f72' \
          '6d5b36ebd5f78fc63f146237c2e1095421ec35cd')

build()
{
	Fpatchall
	Fautoreconf
	Fmake --enable-gpl --with-cpuflags=no --without-doxygen
	Fmakeinstall
}

# optimization OK
