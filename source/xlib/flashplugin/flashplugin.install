# arg 1:  the new package version
post_install() {
  ln -sf /usr/lib/libstdc++.so.6 usr/lib/libstdc++-libc6.2-2.so.3
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install $1
}

# arg 1:  the old package version
pre_remove() {
  /bin/true
}

op=$1
shift

$op $*
