depends=('gtk+2>=2.16.2-2' 'hal>=0.5.7.1-3' 'pmount>=0.9.9-2' 'eject' \
	'dbus-glib>=0.71' 'python>=2.7' 'taglib' 'mutagen' 'pygobject')
makedepends=('perl-xml-parser' 'swig')
archs=('i686' 'x86_64' 'ppc')
