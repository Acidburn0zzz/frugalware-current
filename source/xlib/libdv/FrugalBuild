# Last Modified: Sun, 08 May 2005 23:23:25 +0200
# Compiling Time: ~38 seconds
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libdv
pkgver=0.104
pkgrel=1
pkgdesc="The Quasar DV codec (libdv) is a software codec for DV video"
url="http://libdv.sourceforge.net/"
depends=('popt' 'gtk+')
groups=('xlib')
archs=('i686')
makedepends=('pkgconfig')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/libdv/?sort_by=date&sort=desc'|grep tar.gz$|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('f6b08efce7472daa20685e6e8431f542')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
