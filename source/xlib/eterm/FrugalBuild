# Last Modified: Thu, 21 Jul 2005 19:28:09 +0200
# Compiling Time: 0.27 SBU
# Maintainer: Shrift <shrift@frugalware.org>

pkgname=eterm
pkgver=0.9.3
pkgrel=2
pkgdesc="Eterm is a color vt102 terminal emulator intended as a replacement for xterm."
url="http://eterm.org"
depends=('freetype1' 'libast')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/eterm/?sort_by=date&sort=desc'|grep Eterm-[0-9\.]*.tar.gz|sed -ne 's/.*m-\(.*\)\.t.*/\1/;1 p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/Eterm-$pkgver.tar.gz \
	eterm-0.9.3-CARD64.patch0 $pkgname-$pkgver-gcc4.patch)
sha1sums=('df12cb09676ca265d65b8b5ac61f1ec88d58c692' \
          '6d0f6d0e953ee40993d08f949b98cef55197e41d' \
          '94d954711ec60881faaa35f89283c4d70bd5bb8c')

[ "$CARCH" == "x86_64" ] && mmxo=" --disable-mmx "

build()
{
	Fcd Eterm-$pkgver
	Fbuild --with-imlib --enable-trans --with-x \
		--enable-multi-charset --with-backspace=auto $mmxo
}

# optimalization OK
