# Last modified: Wed, 26 Apr 2006 23:04:27 +0200
# Compiling time: 0.29 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=nas
pkgver=1.7
pkgrel=1
pkgdesc="The Network Audio System is a network transparent, client/server audio transport system."
url="http://radscan.com/nas.html"
license="GPL"
depends=('libxt' 'libxau' 'libxaw' 'libx11' 'libxres' 'libxtrap' 'libxp')
makedepends=('gccmakedep' 'imake' 'rman' 'xproto')
archs=('i686' 'x86_64')
groups=('xlib')
up2date="lynx -dump $url|grep tar.gz$|sed 's/.*-\(.*\)\.src.*/\1/;q'"
source=(http://nas.codebrilliance.com/$pkgname/$pkgname-$pkgver.src.tar.gz \
	$pkgname-$pkgver-{header,gcc4}.patch)
sha1sums=('a41adef84d0bf4c8e02b14d77bec0d284e7c9317' \
	  'e4b19a61e1c5200c6536735f071802083ac8edc6' \
	  '04ed83d02c8fb13a735fb2338a26468e2e9667bb')

# TODO: initscript for nasd

build()
{
	Fpatchall
	sed -i -e "/^[         ]*CDEBUGFLAGS/s:=.*:=${CFLAGS}:" \
		-e "/^[         ]*CXXDEBUGFLAGS/s:=.*:=${CXXFLAGS}:"
		`find -name Makefile`
	xmkmf || return 1
	touch doc/man/lib/tmp.{_man,man}
	make World || return 1
	make DESTDIR=$Fdestdir install
	make DESTDIR=$Fdestdir install.man
	Fmkdir /usr/share/doc/$pkgname-$pkgver/
	Fmv /usr/X11R6/lib/X11/doc/html /usr/share/doc/$pkgname-$pkgver/
	Frm /usr/X11R6/lib/X11/doc/
	Fmv usr/X11R6/* /usr/
	Frm /usr/X11R6
}
