# Last Modified: Sat, 04 Jun 2005 14:32:14 +0000
# Compiling Time: ~6 minutes
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=sdl
pkgver=1.2.8
pkgrel=1
pkgdesc="Simple DirectMedia Layer library"
url="http://www.libsdl.org"
depends=('x' 'esd' 'alsa-lib')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.libsdl.org/release/?sort=modified' |grep 'SDL-[[:digit:][:punct:]]*\.tar\.gz '|sed -n -e 's/.tar.gz//' -e '1 p'|tr -s ' '|cut -d ' ' -f 3|cut -d - -f 2"
source=(http://www.libsdl.org/release/SDL-$pkgver.tar.gz sdl-1.2.8-amd64_asm_fix.patch)
md5sums=('37aaf9f069f9c2c18856022f35de9f8c' 'f8c9e5b47ff16e804f32f7e56cc5a2ed')

build() {
	cd $startdir/src/SDL-$pkgver
	aclocal && autoheader && autoconf && automake -a -c -f
	[ "$CARCH" == "x86_64" ] && (Fpatch sdl-1.2.8-amd64_asm_fix.patch || return 1)
	Fmake --disable-nasm || return 1	
	Fmakeinstall	
}

# vim: ft=sh
