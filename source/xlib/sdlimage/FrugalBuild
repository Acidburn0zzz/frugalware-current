# Last Modified: Fri, 10 Jun 2005 16:56:19 +0000
# Compiling Time: ~1 minute
# Maintainer: Shrift <shrift@frugalware.org>

pkgname=sdlimage
pkgver=1.2.4
pkgrel=2
pkgdesc="Image loadung library for Simple DirectMedia Layer 1.2"
url="http://www.libsdl.org/"
depends=('sdl' 'libjpeg')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.libsdl.org/projects/SDL_image/release/?sort=modified'|grep [0-9\.].tar.gz$|sed -ne 's/.*e-\(.*\)\.t.*/\1/;1 p'"
source=(http://www.libsdl.org/projects/SDL_image/release/SDL_image-$pkgver.tar.gz)
md5sums=('70bf617f99e51a2c94550fc79d542f0b')

build() {
        cd $startdir/src/SDL_image-$pkgver
	Fmake || return 1
        Fmakeinstall || return 1
}

