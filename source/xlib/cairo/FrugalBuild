pkgname=cairo
pkgver=1.0.2
pkgrel=1
pkgdesc="A vector graphics library with cross-device output support"
url="http://cairographics.org"
depends=('x' 'glitz')
makedepends=('gtk-doc')
groups=('xlib')
archs=('x86_64' 'i686')
up2date="lynx -dump '$url/releases/' |grep ]LATEST-cairo |sed -e 's/.*LATEST-cairo-\(.*\)      .*/\1/;q'"
source=($url/releases/$pkgname-$pkgver.tar.gz)
sha1sums=('3a425049499b0b067ed4dc60d94b4d0819c0841b')

build() {
	Fbuild --enable-glitz --enable-gtk-doc --enable-pdf --enable-ps
}

