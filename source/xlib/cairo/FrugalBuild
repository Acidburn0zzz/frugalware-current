# Last Modified: Mon, 22 May 2006 02:36:15 +0200
# Compiling Time: 0.42 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=cairo
pkgver=1.1.6
pkgrel=1
pkgdesc="A vector graphics library with cross-device output support"
url="http://cairographics.org"
depends=('glitz' 'libxrender' 'fontconfig' 'libpng')
makedepends=('gtk-doc')
groups=('xlib')
archs=('x86_64' 'i686')
up2date="lynx -dump http://cairographics.org/snapshots/ | grep LATEST | sed -n 's/.*-cairo-\([0-9\.]\+\).*/\1/;1 p'"
source=($url/snapshots/$pkgname-$pkgver.tar.gz)
options=('scriptlet')
sha1sums=('6c2c5dc688edca44f8087b6ffe8bfc1b7b1c3ba1')

build() {
	Fbuild --enable-glitz --enable-gtk-doc --enable-pdf --enable-ps
}

# optimization OK
