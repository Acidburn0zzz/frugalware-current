pkgname=cairo
pkgver=1.8.10
pkgrel=3
pkgdesc="A vector graphics library with cross-device output support"
url="http://cairographics.org"
depends=('glitz' 'libxrender>=0.9.4-3' 'fontconfig' 'libpng>=1.4.1' 'libxcb>=1.3' 'libx11>=1.2.1' \
	'xcb-util>=0.3.5' 'pixman>=0.15.8' 'freetype2>=2.3.8-2')
makedepends=('gtk-doc>=1.10' 'poppler-glib' 'librsvg>=2.26.0-2')
groups=('xlib')
archs=('x86_64' 'i686' 'ppc')
up2date="lynx -dump 'http://cairographics.org/releases/?C=D;O=A'|grep -m1 '/LATEST-cairo'|sed 's/.*ro-\(.*\).*/\1/'"
source=($url/releases/$pkgname-$pkgver.tar.gz \
        $pkgname-lcd-filter.patch             \
	$pkgname-respect-fontconfig.patch)
options=('scriptlet')
Fconfopts="$Fconfopts --enable-glitz --enable-gtk-doc --enable-pdf --enable-ps --enable-xcb"
sha1sums=('fd5e8ca82ff0e8542ea4c51612cad387f2a49df3' \
          'fdbf7b88ab3d51dec395a2fbe216000b7e379d1a' \
          '76fdca5bf0a803a37869f725adbedd9f0691671d')

# optimization OK
