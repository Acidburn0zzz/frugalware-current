pkgname=cairo
pkgver=0.9.2
pkgrel=1
pkgdesc="A vector graphics library with cross-device output support"
url="http://cairographics.org"
depends=('x' 'glitz')
makedepends=('gtk-doc')
groups=('xlib')
archs=('x86_64' 'i686')
up2date="lynx -dump '$url/snapshots/?C=M;O=D' |grep 'cairo-[0-9\.]*tar.gz$' |sed -e 's/.*cairo-\(.*\).tar.*/\1/;q'"
source=($url/snapshots/$pkgname-$pkgver.tar.gz)
sha1sums=('6b9139a9dafae6593dd5bcdf89308ff42c32e689')

build() {
	Fbuild --enable-glitz --enable-gtk-doc
}

