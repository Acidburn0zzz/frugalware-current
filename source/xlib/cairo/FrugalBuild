pkgname=cairo
pkgver=1.14.6
pkgrel=3
pkgdesc="A vector graphics library with cross-device output support"
url="http://cairographics.org"
depends=('pixman>=0.32.8-2' 'libegl>=11.1.0-2' 'libxrender>=0.9.9-4' 'libgl>=11.1.0-2' \
	'glib2>=2.49.7' 'fontconfig>=2.11.94-3' 'libpng>=1.6.20' 'libffi>=3.2.1')
makedepends=('x11-protos')
groups=('xlib')
replaces=("$pkgname-docs")
archs=('x86_64' 'i686' 'arm')
up2date="lynx -dump 'http://cairographics.org/releases/?C=D;O=A'|grep -m1 '/LATEST-cairo'|sed 's/.*ro-\(.*\).*/\1/'"
source=($url/releases/$pkgname-$pkgver.tar.xz)
options+=('scriptlet')
Fconfopts+=" --enable-egl --enable-gl --enable-pdf --enable-ps --enable-xcb \
		--enable-xlib-xcb  --enable-tee --disable-gtk-doc --enable-xml"
sha1sums=('0a59324e6cbe031b5b898ff8b9e2ffceb9d114f5')

