# Last Modified: Mon, 03 Jul 2006 20:08:46 +0200
# Compiling Time: 0.42 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=cairo
pkgver=1.2.2
pkgrel=1
pkgdesc="A vector graphics library with cross-device output support"
url="http://cairographics.org"
depends=('glitz' 'libxrender' 'fontconfig' 'libpng')
makedepends=('gtk-doc')
groups=('xlib')
archs=('x86_64' 'i686')
up2date="lynx -dump http://cairographics.org/releases/ | grep LATEST | sed -n 's/.*-cairo-\([0-9\.]\+\).*/\1/;1 p'"
source=($url/releases/$pkgname-$pkgver.tar.gz)
options=('scriptlet')
sha1sums=('859b9ed4eaa200a03b9e41ccc45f3799742e6c5c')

build() {
	Fbuild --enable-glitz --enable-gtk-doc --enable-pdf --enable-ps
}

# optimization OK
