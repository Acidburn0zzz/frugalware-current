# Compiling Time: 0.25 SBU
# Old Maintainer: Adam Zlehovszky <zleho@index.hu>
# Maintainer: detto <detto_o@freenet.de>

pkgname=openbox
pkgver=3.4.2
pkgrel=3
pkgdesc="A standards compliant, fast, light-weight, extensible window manager."
pkgdesc_localized=('hu_HU Egy szabványoknak megfelelõ, gyors, pehelysúlyú, kiterjeszthetõ ablakkezelõ.' \
				   'de_DE Ein standardkonformer, schneller, leichtgewichtiger, erweiterbarer Windowmanager.')
url="http://icculus.org/openbox"
depends=('fontconfig' 'libxml2' 'glib2' 'startup-notification' 'pango' 'libsm' 'libxinerama' 'libxrandr')
rodepends=('xorg-server' 'python')
groups=('xlib')
archs=('i686' 'x86_64')
backup=(etc/xdg/openbox/{menu.xml,rc.xml})
options=('scriptlet')
up2date="lynx -dump 'http://icculus.org/openbox/index.php/Openbox:Download'|grep -m1 'openbox-\(.*\).tar.gz'|Flasttar"
source=($url/releases/$pkgname-$pkgver.tar.gz)
sha1sums=('8aa3e4702cab3bd4fc722954a285a2c13f44213c')

build () {
	Fbuild
	Fmv usr/share/doc/$pkgname usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/xsessions/openbox-gnome.desktop /etc/X11/sessions/openbox-gnome.desktop
	Fln /usr/share/xsessions/openbox-kde.desktop /etc/X11/sessions/openbox-kde.desktop
	Fln /usr/share/xsessions/openbox.desktop /etc/X11/sessions/openbox.desktop
}

# optimization OK
