pkgname=clutter
pkgver=1.10.2
pkgrel=1
pkgdesc="A GObject based library for creating fast, visually rich graphical user interfaces."
depends=('libxdamage' 'libxcomposite' 'libgl' 'freetype2' 'libxau>=1.0.4' 'libxdmcp' \
	'gdk-pixbuf2' 'libxml2>=2.7.8' 'atk' 'pango' 'cairo' 'json-glib' 'cogl>=1.10.0')
makedepends=('gobject-introspection' 'gtk-doc')
_F_gnome_ext=".tar.xz"
_F_gnome_git="n"
Finclude gnome
archs=('i686' 'x86_64')
groups=('xlib')
replaces=('clutter-cairo')
provides=('clutter-cairo')
unset MAKEFLAGS
Fconfopts="$Fconfopts --with-imagebackend=gdk-pixbuf --enable-xinput"
sha1sums=('08a9cc7472ab8cb99a5c020581da25d49d354e1d')
if [ "$_F_gnome_git" != "n" ]; then
	unset sha1sums
fi

build() {
	if [ "$_F_gnome_git" != "n" ]; then
		Funpack_scm
		Fcd $pkgname
		sh ./autogen.sh
	else
		Fcd
	fi
	Fbuild
}

# optimization OK
