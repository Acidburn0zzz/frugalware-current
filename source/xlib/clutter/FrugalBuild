# Compiling Time: 6.90 SBU
# Maintainer: Baste <baste@frugalware.org>
# Contributor: bouleetbil <bouleetbil@frogdev.info>
# Contributor: Devil505 <devil505linux@gmail.com>

USE_DOC=${USE_DOC:-"y"}

options+=('asneeded')

pkgname=clutter
pkgver=1.20.0
pkgrel=2
pkgdesc="A GObject based library for creating fast, visually rich graphical user interfaces."
depends=('libxdamage' 'libxcomposite' 'libgl' 'freetype2' 'libxau>=1.0.4' 'libxdmcp' \
	'gdk-pixbuf2>=2.31.1' 'libxml2>=2.7.8' 'atk>=2.14.0' 'pango>=1.36.6' 'cairo' 'json-glib' \
	'cogl>=1.18.2' 'libxkbcommon' 'wayland' 'libinput')
makedepends=('gobject-introspection' 'autoconf' 'automake')
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome
archs=('i686' 'x86_64')
groups=('xlib')
replaces=('clutter-cairo')
provides=('clutter-cairo')
unset MAKEFLAGS
Fconfopts="$Fconfopts --enable-xinput --enable-wayland-backend --enable-egl-backend --enable-evdev-input --enable-wayland-compositor"
source=($source libinput.patch)
sha1sums=('9939b90268e44c5500f44f3b11665eafabe8193e' \
          '9210cdc0a6e35f50d8f4c28c48cf6863218c5303')

if Fuse $USE_DOC; then
        makedepends=("${makedepends[@]}" 'gtk-doc>=1.20')
        Fconfopts+=" --enable-gtk-doc"
        subpkgs=("$pkgname-docs")
        subdescs=("Clutter Documentation")
        subdepends=()
        subgroups=('docs-extra')
        subarchs=('i686 x86_64')
fi

build() {
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall

        if Fuse $USE_DOC; then
                Fsplit $pkgname-docs usr/share/gtk-doc
        fi
}

# optimization OK
