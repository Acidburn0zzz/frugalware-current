pkgname=clutter
pkgver=1.11.16
pkgrel=1
pkgdesc="A GObject based library for creating fast, visually rich graphical user interfaces."
depends=('libxdamage' 'libxcomposite' 'libgl' 'freetype2' 'libxau>=1.0.4' 'libxdmcp' \
	'gdk-pixbuf2' 'libxml2>=2.7.8' 'atk>=2.5.3' 'pango>=1.30.1' 'cairo' 'json-glib' 'cogl>=1.10.0')

makedepends=('gobject-introspection' 'gtk-doc')
_F_gnome_ext=".tar.xz"
_F_gnome_git="n"
Finclude gnome
archs=('i686' 'x86_64')
groups=('xlib')
replaces=('clutter-cairo')
provides=('clutter-cairo')
unset MAKEFLAGS
Fconfopts="$Fconfopts --enable-xinput"
sha1sums=('4d41ce856570247574453fb718ab90e6f2f541e7')
if [ "$_F_gnome_git" != "n" ]; then
	unset sha1sums
fi

build() {
	if [ "$_F_gnome_git" != "n" ]; then
		Funpack_scm
		Fcd $pkgname
		sh ./autogen.sh
	else
		Fcd
	fi
	Fbuild
}

# optimization OK
