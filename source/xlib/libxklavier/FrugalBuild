pkgver=3.6
pkgrel=1
pkgdesc="Utility library to make XKB stuff easier"
_F_sourceforge_dirname="gswitchit"
Finclude sourceforge
url="http://gswitchit.sourceforge.net/"
makedepends=('gtk-doc')
depends=('libxkbfile' 'libxml2' 'libxt' 'iso-codes')
groups=('xlib')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=319 | grep -m1 'libxklavier-\(.*\).tar.gz' | sed 's/.*r-\(.*\).t.*/\1/'"
Fconfopts="$Fconfopts --enable-doxygen --with-xkb-base=/usr/lib/X11/xkb --enable-xkb-support --enable-xmm-support"
sha1sums=('fdbf95a615a8daea7d9f417f42cb8ea6ecfcb192')

