pkgname=x-cursors-industrial
pkgver=0.2.48
pkgrel=3
pkgdesc="Industrial cursor theme for X"
url="http://frugalware.org"
rodepends=('xorg-server')
groups=('xlib')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump http://ftp.frugalware.org/pub/other/x-cursors-industrial/?C=M;O=D|grep tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://ftp.frugalware.org/pub/other/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('fc71f951af474be3628dc65890e9fe423450d6ff')

build()
{
	Fmkdir /usr/share/icons/default
	mv Industrial $Fdestdir/usr/share/icons/
}
