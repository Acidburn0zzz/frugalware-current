# Last modified: Sat, 04 Jun 2005 12:54:28 +0000
# Compiling time: ~1 second
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=x-cursors-industrial
pkgver=0.2.48
pkgrel=2
pkgdesc="Industrial cursor theme for X"
depends=('x')
groups=('xlib')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump \"http://ftp.frugalware.org/pub/other/x-cursors-industrial/?C=M;O=D\"|grep tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://ftp.frugalware.org/pub/other/$pkgname/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('9040d8f103310e2f9489eb09682cd3e4' \
	'7e9a088704af276c3e06b7a6f586dcd8')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/usr/X11/lib/X11/icons
	mv Industrial $startdir/pkg/usr/X11/lib/X11/icons/
}

# vim: ft=sh
