pkgname=clutter-gst
pkgver=1.5.2
pkgrel=2
pkgdesc="Gstreamer bindings for the clutter framework."
depends=('clutter>=1.9.10-2' 'pango' 'zlib' 'gst-plugins-base' 'libxfixes' 'libxi' 'libxxf86vm' 'libdrm' 'gdk-pixbuf2' 'gtk+3')
makedepends=('gobject-introspection' 'gtk-doc')
archs=('i686' 'x86_64')
_F_gnome_ext=".tar.xz"
_F_gnome_git="y"
Finclude gnome
sha1sums=('08967785a04f30e2ff47af988dfddbca99a08639')
groups=('xlib')
if [ "$_F_gnome_git" != "n" ]; then
        unset sha1sums
fi

build() {
        if [ "$_F_gnome_git" != "n" ]; then
                Funpack_scm
                Fcd $pkgname
                sh ./autogen.sh
        else
                Fcd
        fi
        Fbuild
}

# optimization OK

