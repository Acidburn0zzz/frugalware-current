pkgname=poppler
pkgver=0.4.0
pkgrel=1
pkgdesc="A PDF rendering library"
url="http://poppler.freedesktop.org/"
depends=('gtk+2' 'libstdc++')
makedepends=('qt')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump http://poppler.freedesktop.org/releases.html|grep tar.gz|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://poppler.freedesktop.org/$pkgname-$pkgver.tar.gz)
sha1sums=('a34bcf53b458ae97bd8d10bf845d8ef2a4baf8e9')

build()
{
	Fbuild --enable-a4-paper
}

# optimalization OK

