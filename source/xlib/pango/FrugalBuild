pkgname=pango
pkgver=1.27.1
pkgrel=1
pkgdesc="A library for layout and rendering of text"
url="http://www.gtk.org/"
depends=('cairo>=1.8.8' 'glib2>=2.23.4' 'libxft>=2.1.13-2')
groups=('xlib')
makedepends=('gtk-doc' 'perl')
archs=('i686' 'x86_64' 'ppc')
Finclude gnome
Fconfopts="$Fconfopts --enable-gtk-doc --enable-debug=minimum"
sha1sums=('e01daee61a8bc0afa863be364b03e73f8d9214c1')

build() {
	Fcd
	Fsed 'gtkdoc-fixxref' 'gtkdoc-fixxref --module=$(DOC_MODULE)' docs/Makefile*
	Fbuild
}

# optimization OK
