source=(http://freedesktop.org/software/farstream/releases/farstream/$pkgname-$pkgver.tar.gz)
depends=('nice>=0.1.13-2' 'gst1-plugins-base>=1.6.2-2' 'libffi>=3.2.1')
makedepends=('gobject-introspection>=1.46.0-2' 'x11-protos')
