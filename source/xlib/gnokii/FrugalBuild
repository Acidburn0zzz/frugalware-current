# Last Modified: Mon, 13 Jun 2005 15:47:10 +0000
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=gnokii
pkgver=0.6.7
pkgrel=1
pkgdesc="Tools and user space driver for use with mobile phones"
url="http://www.gnokii.org/"
backup=(etc/gnokiirc)
depends=('gtk+' 'perl' 'bluez-libs')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.gnokii.org/news.shtml|grep \"[[:digit:]] gnokii [[:digit:]]\.\"|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 4"
source=(http://www.gnokii.org/download/$pkgname/$pkgname-$pkgver.tar.bz2 gnokii-0.6.7-gnokiirc.patch)
md5sums=('c80d68549c86f287f24c2bee0e929ded' 'd160ec109cfc27ec924169fa18a3c614')

build() {
	Fcd
	Fpatchall || return 1
	Fmake || return 1
	Fmakeinstall || return 1
	install -D -m644  $startdir/src/$pkgname-$pkgver/Docs/sample/gnokiirc \
		$startdir/pkg/etc/gnokii/gnokiirc
}
