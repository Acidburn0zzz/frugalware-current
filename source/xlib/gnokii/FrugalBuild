pkgname=gnokii
pkgver=0.6.3
pkgrel=1
pkgdesc="Tools and user space driver for use with mobile phones"
url="http://www.gnokii.org/"
backup=(etc/gnokiirc)
depends=('gtk+' 'perl')
groups=('xlib')
up2date="lynx -dump http://www.gnokii.org/news.shtml|grep \"[[:digit:]] gnokii [[:digit:]]\.\"|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 4"
source=(http://www.gnokii.org/download/$pkgname-$pkgver.tar.bz2)
md5sums=('7e932688aeaa2ca8be2f2e3b3bf1b90e')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
	install -D -m644  $startdir/src/$pkgname-$pkgver/Docs/sample/gnokiirc \
		$startdir/pkg/etc/gnokii/gnokiirc
}
