pkgname=pygtk
pkgver=2.24.0
pkgrel=2
pkgdesc="Python bindings for GTK+2"
depends=('libxml2>=2.7.8' 'libglade>=2.6.4-5' 'pycairo>=1.10.0-2' 'pygobject>=2.28.6-6' \
	'pygobject3-cairo>=3.18.2-2' 'numpy>=1.10.2' 'gtk+2>=2.24.29-2')
groups=('xlib')
archs=('i686' 'x86_64' 'arm')
Finclude gnome
url="http://www.daa.com.au/~james/pygtk/"
sha1sums=('344e6a32a5e8c7e0aaeb807e0636a163095231c2')
CFLAGS+=" -fno-strict-aliasing -fgnu89-inline"

subpkgs=("$pkgname-docs")
subdescs=("Pygtk Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64 arm')

build()
{
	Fbuild
	Fsplit $pkgname-docs usr/share/gtk-doc
}
# optimization OK
