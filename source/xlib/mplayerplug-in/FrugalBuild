# Last Modified: Thu, 16 Feb 2006 23:53:26 +0100
# Compiling Time: 0.13 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=mplayerplug-in
pkgver=3.21
pkgrel=1
pkgdesc="A browser plugin that uses mplayer to play digital media from websites"
url="http://mplayerplug-in.sourceforge.net/"
depends=('nss' 'libxpm' 'mplayer')
makedepends=('mozilla')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep Current|sed 's/.*: \(.*\) r.*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('91f2cbb5e01c7d43ac2c6fc29196b8e926ef5073')

build()
{
	Fcd $pkgname
	Fmake
	Fexerel $pkgname.so /usr/lib/mozilla/plugins/$pkgname.so
	Ffilerel $pkgname.xpt /usr/lib/mozilla/plugins/$pkgname.xpt
}

# optimalization OK
