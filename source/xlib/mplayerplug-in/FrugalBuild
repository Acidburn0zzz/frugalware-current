# Last Modified: Mon, 14 Feb 2005 11:38:10 +0100
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=mplayerplug-in
pkgver=2.80
pkgrel=1
pkgdesc="A browser plugin that uses mplayer to play digital media from websites"
url="http://mplayerplug-in.sourceforge.net/"
depends=('mplayer')
makedepends=('mozilla')
groups=('xlib')
up2date=`lynx -dump $url|grep Current|sed 's/.*: \(.*\) r.*/\1/'`
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('ce3235ff7d46fae416cfb175193a5f25')

build()
{
	Fcd $pkgname
	Fmake #--with-gecko-sdk=/usr/lib/gecko-sdk
	Fexe $pkgname/$pkgname.so /usr/lib/mozilla/plugins/$pkgname.so
	Ffile $pkgname/$pkgname.xpt /usr/lib/mozilla/plugins/$pkgname.xpt
}

# vim: ft=sh
