options+=('asneeded')

pkgname=webkit2-gtk3
_F_archive_name=webkitgtk
pkgver=2.8.0
pkgrel=1
pkgdesc="Open source web browser engine gtk+3"
url="http://www.webkitgtk.org"
depends=('gtk+3>=3.16.0' 'libsoup' 'gst1-plugins-base' 'enchant' 'libsecret' 'libwebp')
makedepends=('gperf' 'ruby' 'gtk+2' 'gobject-introspection')
groups=('xlib')
archs=('i686' 'x86_64')
source=(http://webkitgtk.org/releases/$_F_archive_name-$pkgver.tar.xz)
up2date="lynx -dump -source http://webkitgtk.org/?page=download | Flasttar"
Finclude cmake
_F_cmake_confopts="  -DPORT=GTK -DCMAKE_BUILD_TYPE=Release"
sha1sums=('ab91e24620a30dda28b8265c996b3cb99a9abb77')

build() {
	Fcd
	rm -r Source/ThirdParty/gtest/
	rm -r Source/ThirdParty/qunit/
	CMake_build
}


# optimization OK
