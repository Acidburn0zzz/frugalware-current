# Compiling time: 0.66 SBU
# Maintainer: Baste <baste@frugalware.org>
# Contributor: bouleetbil <bouleetbil@frogdev.info>

pkgname=gdk-pixbuf2
_F_gnome_name=gdk-pixbuf
pkgver=2.36.0
pkgrel=1
pkgdesc="An image loading library"
depends=('glib2>=2.50.0' 'libx11>=1.6.3-4' 'libpng>=1.6.20' 'jasper>=1.900.1-10' \
	'libtiff>=4.0.6-2' 'libjpeg>=9a-2')
groups=('xlib')
makedepends=('gobject-introspection>=1.49.2' 'x11-protos')
archs=("x86_64")
_F_gnome_devel="y"
_F_gnome_ext=".tar.xz"
Finclude gnome
options+=('scriptlet')
_F_cd_path="$_F_gnome_name-$pkgver"
replaces=("$pkgname-docs")
sha1sums=('39328ecec0ec61edf8530c76a1495ca0fa95f4cf')


build() {

	Fbuild --with-libjasper \
		--with-included-loaders=png \
		--enable-introspection=yes \
		--with-x11

	touch $Fdestdir/usr/lib/gdk-pixbuf-2.0/2.10.0/loaders.cache || Fdie
	Fmkdir /etc/gtk-2.0
	Fmkdir /etc/gtk-3.0
}

# optimization OK
