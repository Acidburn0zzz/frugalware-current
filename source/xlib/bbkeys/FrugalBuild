# Compiling Time: ~1 minutes
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=bbkeys
pkgver=0.9.0
pkgrel=1
pkgdesc="A completely configurable key-combo grabber for blackbox"
url="http://bbkeys.sourceforge.net"
depends=('blackbox>=0.70.0' 'perl')
groups=('xlib')
archs=('i686' 'x86_64')
Finclude sourceforge
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz xft-fix.patch)
md5sums=('bd4c4bb38344b5c596cea4a72d940827' '0a196dd985754ac4d4669ece0f3bd788')

build()
{
	Fpatchall
	aclocal && autoheader && autoconf && automake -a -c -f
	Fmake
	Fmakeinstall
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
}
