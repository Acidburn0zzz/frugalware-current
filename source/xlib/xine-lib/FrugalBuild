# Compiling Time: 2.82 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=xine-lib
pkgver=1.1.3
pkgrel=1
pkgdesc="Xine multimedia playback engine libraries"
_F_sourceforge_dirname="xine"
Finclude sourceforge
url="http://xinehq.de"
up2date="lynx -dump $url/index.php/download|grep xine-lib.*tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/;q'"
depends=('imagemagick' 'aalib' 'libmng' 'libtheora' 'libvorbis' 'faad2>=2.5' 'flac' 'libxvmc' 'libxv' 'speex')
makedepends=('arts' 'esd' 'sdl')
groups=('xlib')
archs=('i686' 'x86_64')
source=($source vidix64-x86_64.patch)

build()
{
	Fpatchall
	[ "$CARCH" == "x86_64" ] && autoconf
	export CFLAGS="$CFLAGS -UHAVE_MMX"
	Fmake --enable-ipv6 --with-internal-vcdlibs --disable-optimizations
	Fmakeinstall
}

# optimization OK

sha1sums=('c0886910ddb1afa1a72572decf12c0251bba40bf' \
	  'e55c1ec2c286f877fd0f462fab120cffdc2d7f29')
