pkgname=xine-lib
pkgver=1.2.1
pkgrel=2
pkgdesc="Xine multimedia playback engine libraries"
_F_sourceforge_dirname="xine"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
url="http://xinehq.de"
depends=('libxml2>=2.7.8' 'imagemagick>=6.7.9_2-1' 'aalib' 'libmng' 'libtheora' 'libvorbis' \
	'faad2>=2.7' 'flac>=1.1.4' 'libxvmc' 'libxv' \
	'speex' 'wavpack' 'libmpcdec' 'freetype2>=2.3.4' 'fontconfig' \
	'mesa' 'libx11' 'libxxf86vm' 'ffmpeg>=0.11.1' 'x264>=20120213' 'libtool' \
	'libxvmc' 'libxinerama' 'libjpeg' 'libmpcdec' 'libtiff' 'libraw1394>=2.0.0-1' \
	'libcdio' 'vcdimager')
options=('scriptlet')
makedepends=('esd>=0.2.41' 'sdl>=1.2.14-2' 'jack>=0.118.0')
groups=('xlib')
archs=('i686' 'x86_64')
sha1sums=('c86591ff9fb6b073b8d115fa31b5a74a305e8628')

build()
{
	export CFLAGS="$CFLAGS -UHAVE_MMX"
	Fbuild \
		--enable-ipv6 \
		--disable-optimizations \
		--with-libflac \
		--with-wavpack \
		--with-freetype \
		--enable-antialiasing \
		--with-fontconfig \
		--with-xcb \
		--with-x \
		--with-w32-path=/usr/lib/win32 \
		--disable-gnomevfs \
		--disable-gdkpixbuf \
		--disable-samba
	# TODO: add subpkg's for this stuff
}

# optimization OK
