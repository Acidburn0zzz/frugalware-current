pkgname=xine-lib
pkgver=1.0
pkgrel=1
pkgdesc="Xine multimedia playback engine libraries"
url="http://www.xinehq.de/"
depends=('sdl' 'freetype2' 'flac' 'libvorbis' 'audiofile' 'glib2' 'gcc' 'libpng' 'codecs')
preup2date=`lynx -dump http://xinehq.de/index.php/releases|grep xine-lib-|sed -n 's/.*b-\(.*\)\.t.*/\1/;1 p'`
up2date=`echo $preup2date|sed 's/-//'`
source=(http://dl.sourceforge.net/sourceforge/xine/$pkgname-$preup2date.tar.gz)
md5sums=('96e5195c366064e7778af44c3e71f43a')

build() {
	cd $startdir/src/$pkgname-$preup2date
	# patch -p1 < $startdir/src/$pkgname-$preup2date-kernel26.diff
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
