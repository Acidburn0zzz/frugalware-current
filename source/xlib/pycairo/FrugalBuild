# Last Modified: Mon, 31 Oct 2005 13:07:04 +0100
# Compiling Time: 0.11 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=pycairo
pkgver=1.0.2
pkgrel=1
pkgdesc="Python bindings for cairo"
url="http://cairographics.org"
depends=('gtk+2' 'libsvg-cairo' 'pygtk')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump '$url/releases/' |grep ]LATEST-pycairo |sed -e 's/.*LATEST-pycairo-\(.*\)    .*/\1/;q'"
source=($url/releases/$pkgname-$pkgver.tar.gz)
sha1sums=('92b51f670aaba03ac372dc2999e715bc5281f5e5')

build() {
	Fbuild --with-pygtk
}

# vim: ft=sh

# optimalization OK

# NOTE: As we see, pycairo depends on pygtk. But pygtk depends on pycairo too :)
