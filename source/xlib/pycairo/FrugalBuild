pkgname=pycairo
pkgver=0.9.0
pkgrel=1
pkgdesc="Python bindings for cairo"
url="http://cairographics.org"
depends=('gtk+2' 'libsvg-cairo' 'pygtk')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump '$url/snapshots/?C=M;O=D' |grep 'pycairo-[0-9\.]*tar.gz$' |sed -e 's/.*pycairo-\(.*\).tar.*/\1/;q'"
source=($url/snapshots/$pkgname-$pkgver.tar.gz)
sha1sums=('b2fa55b15e3f38aa356d57418769f94487cdb838')

build() {
	Fbuild --with-pygtk
}

# vim: ft=sh

# optimalization OK

# NOTE: As we see, pycairo depends on pygtk. But pygtk depends on pycairo too :)
