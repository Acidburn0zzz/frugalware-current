pkgname=libsecret
pkgver=0.18.5
pkgrel=2
pkgdesc="Library for storing and retrieving passwords and other secrets"
depends=('libgcrypt>=1.7.3-2')
makedepends=('intltool>=0.51.0-2' 'gobject-introspection>=1.49.2' 'docbook-xsl')
groups=('xlib')
archs=('i686' 'x86_64')
_F_gnome_doc="n"
_F_gnome_ext=".tar.xz"
_F_gnome_devel="n"
Finclude gnome gnome-scriptlet
sha1sums=('65d80307756ef45f7c282098c48125ef41f56acd')

subpkgs=("${subpkgs[@]}" 'libsecret-vala')
subdescs=("${subdescs[@]}" 'Libsecret Vala Bindings')
subdepends=("${subdepends[@]}" 'vala>=0.32.0')
subrodepends=("${subrodepends[@]}" '')
subprovides=("${subprovides[@]}" '')
subreplaces=("${subreplaces[@]}" '')
subgroups=("${subgroups[@]}" 'gnome-extra')
subarchs=("${subarchs[@]}" 'i686 x86_64')


build() {
	Fbuild
	Fsplit libsecret-vala usr/share/vala
	Fbuild_gnome_scriptlet
}

# optimization OK
