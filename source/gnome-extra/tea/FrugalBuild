# Compiling Time: 0.18 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=tea
pkgver=16.1.1
pkgrel=1
pkgdesc="TEA is a GTK2-based text editor for Linux and *BSD."
url="http://tea.linux.kiev.ua/"
license="GPL"
depends=('gtk+2' 'gtksourceview' 'gnome-vfs' 'gconf' 'aspell')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_sourceforge_name=tea-editor
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
source=(${source/tea-editor-/tea-})
_F_desktop_name=Tea
_F_desktop_icon=tea.png
_F_desktop_categories="Utility;Editor;"
_F_cd_path="$pkgname-$pkgver"
sha1sums=('648424ad7b4853c8540ac7a73c5618b89a0ef3f1')

build()
{
	Fbuild
	Fmkdir usr/share/pixmaps
	Fcp /usr/share/tea/pixmaps/tea_icon_v2.png /usr/share/pixmaps/tea.png
	Fdesktop2
}

# optimization OK
