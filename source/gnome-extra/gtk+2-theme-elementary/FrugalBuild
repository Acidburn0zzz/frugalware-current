pkgname=gtk+2-theme-elementary
_F_archive_name="eGTK"
pkgver=1.0
pkgrel=1
pkgdesc="The official elementary GTK theme designed to be smooth, attractive, fast, and usable."
url="http://www.elementary-project.com/"
rodepends=('elementary-icon-theme' 'xcursor-theme-vanilla-dmz')
depends=('gtk+2-engines-murrine ' 'gtk+2-engines-aurora')
groups=('gnome-extra')
archs=('i686' 'x86_64')
options=('noversrc')
up2date=$pkgver
source=(http://launchpad.net/egtk/$pkgver/$pkgver/+download/$_F_archive_name.tar.gz)
sha1sums=('e97d5caa04d8ed13713a6b8d0b53dd7efc613fa2')

build () {
	Fmkdir usr/share/themes
	Fcpr $_F_archive_name usr/share/themes/elementary/
}

