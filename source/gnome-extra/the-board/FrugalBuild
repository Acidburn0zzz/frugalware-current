# Compiling time: 0.66 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=the-board
pkgver=0.1.1.1
pkgrel=2
pkgdesc="A space to place daily records"
depends=('libnotify>=0.7' 'nautilus' 'libsoup-gnome' \
	'clutter-gtk' 'clutter-gst' 'mx' 'gjs' 'xulrunner' \
	'gtk+3>=3.0.3')
makedepends=('intltool' 'gobject-introspection')
groups=('gnome-extra')
archs=('i686' 'x86_64' 'ppc')
_F_gnome_devel="y"
Finclude gnome
sha1sums=('05eecfeffa0a5757d8946572d6fa0ec2d9189541')
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/lib/xulrunner/

build() {
	if [ "$_F_gnome_git" != "n" ]; then
                Funpack_scm
                Fcd $pkgname
                sh ./autogen.sh
        fi
        Fbuild
}

# optimization OK
