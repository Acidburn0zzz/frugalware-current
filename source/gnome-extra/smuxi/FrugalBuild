pkgname=smuxi
pkgver=0.7.2.1
pkgrel=1
pkgdesc="user-friendly and cross-platform IRC client for sophisticated users for GNOME / GTK+"
depends=('mono' 'nini' 'smartirc' 'gtk-sharp' 'log4net' 'gnome-sharp')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64' 'ppc')
source=(http://www.smuxi.org/jaws/data/files/$pkgname-$pkgver.tar.gz)
url=www.smuxi.org
up2date="Flasttar http://www.smuxi.org/page/Download"
sha1sums=('94cbc0f5bee6cd2e1ff8c8f72d714270c80e5875')
_F_gnome_desktop="y"
Finclude mono gnome-scriptlet

build() {
	Fmonoexport
	Fbuild
	Fbuild_gnome_scriptlet
	Fmonocleanup
}
