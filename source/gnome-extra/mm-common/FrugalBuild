pkgname=mm-common
pkgver=0.9.11
pkgrel=1
pkgdesc="Common build files of the C++ bindings"
groups=('gnome-extra')
archs=('i686' 'x86_64')
depends=('libsigc++2')
makedepends=('curl')
_F_gnome_ext=".tar.xz"
_F_gnome_devel="y"
Finclude gnome
sha1sums=('46611e569bc6915c41cb66821e729c851e4b84fb')

build(){
	Fcd
	Fsed '$(datadir)/pkgconfig' '$(libdir)/pkgconfig' Makefile.{am,in}
	Fbuild
}

# optimization OK
