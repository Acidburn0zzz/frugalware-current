pkgname=listen
pkgver=0.6.3
pkgrel=1
pkgdesc="Music player and management for GNOME"
archs=('i686' 'x86_64')
url="http://www.listen-project.org/"
groups=('gnome-extra')
depends=('pygtk' 'gnome-python-extras' 'pyvorbis' 'pymad' 'mutagen' 'gst-python' 'python>=2.6' 'notification-daemon' 'pyxdg' \
'pywebkitgtk' 'pyinotify')
makedepends=('gettext' 'pkgconfig' 'intltool')
options=('scriptlet')
up2date="Flasttar $url/downloads"
source=(http://download.listen-project.org/lastest/$pkgname-$pkgver.tar.gz)
sha1sums=('c07a1af9495731fb69b0bf69f188e5ce3a93f1bd')

build() {
	Fcd
	chmod u+x ./mmkeys/setup.py || Fdie
	make CHECK_DEPENDS=0 PREFIX=/usr || Fdie
	Fmakeinstall
}

# optimization OK
