pkgname=gbrainy
pkgver=1.1
pkgrel=1
pkgdesc="brain teaser game and trainer"
url="http://live.gnome.org/$pkgname"
depends=('mono>=2.0.1' 'gtk2-sharp>=2.12.6' 'libgnome>=2.24.1' 'cairo>=1.8.0' 'gnome-sharp' 'mono-addins')
makedepends=('intltool' 'gettext')
options=('scriptlet')
archs=('i686' 'x86_64')
Finclude mono
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
Finclude gnome-scriptlet
groups=('gnome-extra')
up2date="lynx -dump $url | Flasttar"
source=(http://gent.softcatala.org/jmas/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('10e45bb9e40ca85594fc16d7a1682f29b1e66f76')

build()
{
       Fcd
       Fmonoexport
       Fbuild
       Fbuild_gnome_scriptlet
       Fmonocleanup
}
