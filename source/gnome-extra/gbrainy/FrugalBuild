pkgname=gbrainy
pkgver=1.12
pkgrel=1
pkgdesc="brain teaser game and trainer"
url="http://live.gnome.org/$pkgname"
depends=('mono>=2.0.1' 'gtk2-sharp>=2.12.9-2' 'libgnome>=2.24.1' 'cairo>=1.8.0-2' 'gnome-sharp' 'mono-addins')
makedepends=('intltool' 'gettext')
options=('scriptlet')
archs=('i686' 'x86_64')
Finclude mono
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
Finclude gnome-scriptlet
groups=('gnome-extra')
up2date="lynx -dump $url | Flasttar"
source=(http://gent.softcatala.org/jmas/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('82660c0c8b893ca643c95df5a8cb9d2b26a60698')

build()
{
       Fcd
       Fmonoexport
       Fbuild
       Fbuild_gnome_scriptlet
       Fmonocleanup
}
