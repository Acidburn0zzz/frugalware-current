pkgname=cssed
pkgver=0.4.0
pkgrel=1
pkgdesc="CSSED is a web development suite for Gnome"
url="http://cssed.sourceforge.net"
depends=('gtk+2')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep 'Download now' | sed 's/Download now (//g' | sed 's/)//g' | sed 's/ //g'"
source=(http://heanet.dl.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz \
	cssed.desktop)
sha1sums=('98ca1bcca97ee22516ca18ebfd832a48efb80e77' \
	  '82783b8ffb8e473e63ba8d1116bf8449c4d3ff52')
install=cssed.install

build() {
	Fbuild
	install -D -m644 $startdir/src/$pkgname.desktop $startdir/pkg/usr/share/applications/$pkgname.desktop
}

# vim: ft=sh

# optimalization OK
