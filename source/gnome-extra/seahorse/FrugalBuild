unset MAKEFLAGS
Fconfopts="${Fconfopts[@]} -enable-ldap --enable-hkp --enable-libnotify \
	--with-keyserver --enable-ssh --enable-dbus --enable-avahi \
	--enable-sharing --enable-gnome-keyring --disable-scrollkeeper \
	--disable-schemas-install"

