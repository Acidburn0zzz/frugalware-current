depends=('gnutls=2.6.3-1' 'gtksourceview' 'gnupg>=1.4.9-2' \
	'gpgme' 'libsoup>=2.24.0.1' 'dbus' 'dbus-glib' 'libxml2' \
	'libnotify' 'libgnomeui>=2.24.0' 'openssh' 'gconf>=2.24.0' 'avahi')
makedepends=('gettext' 'openldap' 'intltool' 'pkgconfig' 'gnome-doc-utils')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/seahorse.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_mime="y"
Finclude gnome gnome-scriptlet
