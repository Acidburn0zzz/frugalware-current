pkgname=stardict
pkgver=2.4.8
pkgrel=2
pkgdesc="a Cross-Platform and international dictionary written in Gtk2"
_F_sourceforge_ext=.tar.bz2
Finclude sourceforge
depends=('perl-xml' 'libgnomeui' 'dbus-glib>=0.71')
groups=('gnome-extra')
archs=('i686' 'x86_64')
sha1sums=('cbb312281f7a01290de4c2a213635deee8bc8a92')

build() {
	Fcd
	PKG_CONFIG=pkg-config Fmake --prefix=/usr --sysconfdir=/etc --mandir=/usr/share/man
	Fmakeinstall
	Fmkdir /usr/share/$pkgname/dic
}

# optimization OK
