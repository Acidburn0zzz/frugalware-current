pkgname=simple-ccsm
Finclude compiz
pkgrel=1
pkgdesc="Simple CompizConfig settings manager"
makedepends=('intltool')
rodepends=('pygtk' 'compizconfig-python>=0.7.6' 'ccsm>=0.7.6')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_iconcache=y
Finclude gnome-scriptlet
sha1sums=('b1123555c40a33ff28fa74a4f8fba511da1a5ec3')

build()
{
	Fcd
	python setup.py install --root=$Fdestdir --prefix=/usr
	Fbuild_gnome_scriptlet
}

