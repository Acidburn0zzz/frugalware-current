pkgname=f-spot
pkgver=0.3.4
pkgrel=1
pkgdesc="A personal photo management program for Gnome"
url="http://www.gnome.org/projects/f-spot/"
depends=('gtk2-sharp' 'lcms' 'libexif' 'libgphoto2' 'libjpeg' 'sqlite3' 'dbus-sharp>=0.63' 'gnome-sharp')
makedepends=('gnome-screensaver' 'perl-xml' 'gnome-doc-utils')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_desktop=y
_F_gnome_iconcache=y
_F_gnome_scrollkeeper=y
Finclude gnome mono gnome-scriptlet
sha1sums=('0c421f7fc67ac70c793b6d1a1a7d838038ba8985')

build() {
	Fmonoexport
	Fbuild_slice_scrollkeeper
	Fbuild
        Fmonocleanup
	Fbuild_gnome_scriptlet
}

# optimization OK
