pkgname=f-spot
pkgver=0.4.0
pkgrel=1
pkgdesc="A personal photo management program for Gnome"
url="http://www.gnome.org/projects/f-spot/"
depends=('gtk2-sharp' 'lcms' 'libexif' 'libgphoto2' 'libjpeg' 'sqlite3' 'dbus-sharp>=0.63' 'gnome-sharp>=2.16.0-3')
makedepends=('gnome-screensaver' 'perl-xml' 'gnome-doc-utils')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_desktop=y
_F_gnome_iconcache=y
_F_gnome_scrollkeeper=y
_F_gnome_devel=y
Finclude gnome mono gnome-scriptlet
sha1sums=('a31df32126ea7c260d5753da7413811aa08d4540')

build() {
	Fmonoexport
	Fbuild_slice_scrollkeeper
	Fbuild
        Fmonocleanup
	Fbuild_gnome_scriptlet
}

# optimization OK
