pkgname=syncthing-gtk
pkgver=0.9.2.4
pkgrel=1
pkgdesc="GTK Frontend for Syncthing"
url="http://syncthing.net/"
groups=('gnome-extra')
license=('MIT')
archs=('i686' 'x86_64')
depends=('gtk+3' 'libnotify' 'python-dateutil' 'pygobject' 'pyinotify' 'pycairo')
rodepends=('syncthing>=0.13' 'libappindicator') #Needed for StatusIcon
_F_github_author="syncthing"
_F_github_tag_v="y"
Finclude github
sha1sums=('20d60a756a5f637fd0ed144ea8f0424e9029ec32')

build() {
	Fcd
	Fmake
	Fexec python setup.py install --prefix "$Fprefix" --root "$Fdestdir"
}

# optimization OK
