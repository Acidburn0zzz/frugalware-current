# Compiling Time: 0.93 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=anjuta
pkgver=2.1.1
pkgrel=1
pkgdesc="Anjuta is a versatile IDE for C and C++, written for GTK/GNOME."
url="http://anjuta.sourceforge.net/"
depends=('gdl' 'gnome-build' 'guile' 'autogen' 'glade3' 'devhelp' 'graphviz' 'libgnomeprintui' 'vte' 'subversion' 'gtksourceview')
makedepends=('perl-xml' 'intltool' 'gnome-doc-utils')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_scrollkeeper="y"
_F_gnome_schemas=('/etc/gconf/schemas/anjuta-valgrind.schemas')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge gnome-scriptlet
groups=('gnome-extra')
archs=('i686' 'x86_64')
sha1sums=('b31d0733e7cbb3996c9f3e0c49ef7ad9c077de3f')

build() {
	Fcd
	Fbuild_slice_scrollkeeper
	Fbuild
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
	Fbuild_gnome_scriptlet
}

# optimization OK
