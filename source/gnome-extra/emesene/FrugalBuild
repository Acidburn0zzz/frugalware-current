# Compiling Time: 0.01 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=emesene
pkgver=030707
pkgrel=1
pkgdesc="emesene is an OS independent MSN Messenger client written in Python and GTK+"
_F_sourceforge_ext=".tar.gz"
Finclude sourceforge
url="http://emesene.org/"
depends=('pygtk')
groups=('gnome-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=168206 | grep -m1 tar.gz | sed 's/.*ne-\(.*\).t.*/\1/'"
_F_desktop_icon="emesene.png"
_F_desktop_categories="Network;InstantMessaging;"
_F_desktop_name="Emesene"
_F_desktop_desc="A MSN Messenger clone"
sha1sums=('6720890b611bc65a33aa37f44a1b6c1fb27a59ba')

build()
{
	cd $Fsrcdir
	Fmkdir /usr/{bin,share/pixmaps}
	Fcprrel $pkgname /usr/share/
	Frm /usr/share/emesene/{emesene,emesene.bat,docs,COPYING}
	Fwrapper "python /usr/share/emesene/Controller.py" $pkgname
	Fcp /usr/share/emesene/themes/default/userPanel.png /usr/share/pixmaps/emesene.png
	Fdesktop2
}

