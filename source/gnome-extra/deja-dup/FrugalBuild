pkgname=deja-dup
pkgver=34.3
pkgrel=1
pkgdesc="Déjà Dup is a simple backup program and uses duplicity as the backend."
depends=('gtk+3' 'gnome-keyring' 'libpeas' 'libnotify' 'libsecret-vala' 'packagekit-glib')
makedepends=('gnome-doc-utils' 'intltool' 'vala' 'elinks' 'help2man' 'itstool' 'nautilus' 'x11-protos')
rodepends=('duplicity')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_launchpad_ext=".tar.xz"
_F_launchpad_branch="34"
_F_gnome_iconcache="y"
_F_gnome_glib="y"
Finclude launchpad gnome-scriptlet cmake
source=("$source" help2man.patch)
sha1sums=('609aa1192aa74c4be07dad502643e07185b71d80' \
          '1409812b50fd55c49e46386880a7ce80ea72560a')

replaces=("backintime" "backintime-kde" "backintime-gnome")
conflicts=("${replaces[@]}")

build() {
	CMake_build
	Fbuild_gnome_scriptlet
	Fmv usr/etc etc

	Fmkdir "etc/ld.so.conf.d"
	echo /usr/lib/deja-dup  >> "$Fdestdir/etc/ld.so.conf.d/deja-dup.conf" || Fdie

}

# optimization OK
