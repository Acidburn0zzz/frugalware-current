# Compiling Time: 0.03 SBU
# Maintainer: Priyank <priyankmg@gmail.com> 

pkgname=gpp
pkgver=0.6.6
pkgrel=1
pkgdesc="GNOME Photo Printer"
url="http://www.fogman.de/?GnomePhotoPrinter"
depends=('libgnomeui' 'libgnomeprint' 'libgnomeprintui' 'libgnomecanvas' \
	'gdk-pixbuf' 'libbonobo' 'libglade')
groups=('gnome-extra')
archs=('i686')
up2date="lynx -dump $url | grep Version | sed 's/.*(Version \(.*\))/\1/;q'"
source=(http://www.fogman.de/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('649d1707d7d9566121afd9cab28229d688ebc89c')

build() {
	Fconf --datadir=/usr/share
	make || return 1
	make DESTDIR=$Fdestdir install
}

# optimization OK
