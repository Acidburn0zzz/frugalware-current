# Compiling Time: ~0.12 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=coriander
pkgver=2.0.0_rc5
pkgrel=1
pkgdesc="A library to control A/V devices using the 1394ta AV/C commands."
Finclude sourceforge
url="http://damien.douxchamps.net/ieee1394/coriander/"
depends=('libgnomeui' 'libtheora' 'ffmpeg' 'libxv' 'sdl' 'libdc1394>=2.0.0_rc7' 'libraw1394' 'faad2' 'faac')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=17605 |grep coriander-2[0-9.].*tar.gz |sed -n -e 's/.*r-\(.*\).t.*/\1/' -e 's/-/_/' -e '1 p'"

build() {
	Fcd $pkgname-`echo $pkgver | sed 's/_/-/'`
	Fmake
	Fmakeinstall
}

sha1sums=('e2e22fb162e52c2c3876f99fecabe0b4e1521e5b')
# optimization OK
