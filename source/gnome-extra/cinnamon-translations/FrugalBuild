options+=('asneeded')

pkgname=cinnamon-translations
pkgver=2.0.3
pkgrel=1
pkgdesc="Translations for Cinnamon and Nemo"
url="http://cinnamon.linuxmint.com/"
groups=('gnome-extra' 'cinnamon')
archs=('i686' 'x86_64')
depends=()
_F_github_author=linuxmint
_F_github_name=cinnamon-translations
_F_github_tag=y
Finclude github
sha1sums=('c86f26ece30b479cb3427a2416951de980013b2c')

build()
	{
		Funpack_github
                Fcd
                 Fmkdir /usr/share/locale
		 Fcp $pkgname-$pkgver/mo-export/* /usr/share/locale/
	}

# optimization OK
