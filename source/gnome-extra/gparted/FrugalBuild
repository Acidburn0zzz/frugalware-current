# Compiling time: 0.51 SBU
# Maintainer: DNAku <DNAku@frugalware.org>

pkgname=gparted
pkgver=0.3.1
pkgrel=3
pkgdesc="Parted GUI written in C++ using gtkmm as Graphical Toolkit"
url="http://gparted.sourceforge.net"
depends=('parted>=1.8.0' 'gtkmm' 'freetype2' 'pango>=1.14.3')
makedepends=('perl-xml')
archs=('i686' 'x86_64')
groups=('gnome-extra')
options=('scriptlet')
_F_sourceforge_ext=".tar.bz2"
_F_sourceforge_prefix="$pkgname-"
Finclude sourceforge
source=($source gparted-desktop-gnome-patch.diff gparted-kde.desktop parted-1.8.X.patch)
sha1sums=('c3689f51b61cc3f41ebb0345c478da0df1346039' \
          '0f0146d68079e09a8317a5556e406e73b01c98a2' \
          'b11d446ce6a2fefd10fa0f081d61460e13144cc5' \
          '30c14c8eaf0a662804aef7e736dc352fddc5bb75')


build()
{
	Fcd
	Fpatchall
	autoconf || Fdie
	Fmake
	Fmakeinstall
	## need patch
	Fmkdir /usr/share/applications/kde/
	Ffile gparted-kde.desktop /usr/share/applications/kde/gparted.desktop
}

# optimization OK
