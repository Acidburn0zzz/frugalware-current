# Compiling Time: 0.16 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=roxterm
pkgver=1.18.1
pkgrel=2
pkgdesc="a terminal emulator intended to provide similar features to gnome-terminal, based on the same VTE library, but with a smaller footprint and quicker start-up time."
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude gnome-scriptlet sourceforge
depends=('libglade>=2.6.4-3' 'vte>=0.24.0' 'dbus-glib')
makedepends=('perl-xml-parser')
groups=('gnome-extra')
archs=('i686' 'x86_64')

build() {
	Fbuild
	# Fixup for docs
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
	Fbuild_gnome_scriptlet
}
sha1sums=('ba183ab7f9bf75d7c50481b510837dee1bde6955')

# optimization OK
