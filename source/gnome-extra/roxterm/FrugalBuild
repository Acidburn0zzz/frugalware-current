# Compiling Time: 0.16 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=roxterm
pkgver=1.15.2
pkgrel=1
pkgdesc="a terminal emulator intended to provide similar features to gnome-terminal, based on the same VTE library, but with a smaller footprint and quicker start-up time."
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude gnome-scriptlet sourceforge
depends=('libglade>=2.6.4-2' 'vte>=0.20.4' 'dbus-glib')
makedepends=('perl-xml-parser')
groups=('gnome-extra')
archs=('i686' 'x86_64')

build() {
	Fbuild
	# Fixup for docs
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
	Fbuild_gnome_scriptlet
}
sha1sums=('40546b7d9016e76971d0cc2b17f3fa1f64c80da3')

# optimization OK
