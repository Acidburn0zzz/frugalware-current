# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=torrent-search
pkgver=0.8.2
pkgrel=1
pkgdesc="Looks for torrent files on different websites."
depends=('gettext' 'gnome-python' 'gnome-python-desktop' 'pygtk' 'lxml' 'python-httplib2')
options=('scriptlet')
groups=('gnome-extra')
archs=('i686')
_F_sourceforge_sep="_"
Finclude sourceforge gnome-scriptlet
_F_gnome_schemas=('/etc/gconf/schemas/torrent-search.schemas')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
sha1sums=('04bd68c2580cab2ca3ee569e64d8535182d37dc2')

build()	{
	Fcd
	Ficonrel share/torrent-search/icons/48x48/$pkgname.png
	Fbuild
	Fmkdir etc/gconf/schemas/
	Fmv usr/share/gconf/schemas/$pkgname.schemas etc/gconf/schemas/torrent-search.schemas
	Frm /usr/share/gconf
	Fbuild_gnome_scriptlet
}

