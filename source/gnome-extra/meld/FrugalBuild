# Contributor: AlexExtreme <alex@alex-smith.me.uk>

options+=('asneeded')

pkgname=meld
pkgver=1.8.3
pkgrel=1
pkgdesc="a visual diff and merge tool"
url="http://meldmerge.org/"
depends=('pygtk' 'pygtksourceview' 'dbus-python' 'python-gconf')
makedepends=('intltool' 'gnome-doc-utils')
_F_gnome_desktop="y"
_F_gnome_scrollkeeper="y"
_F_gnome_iconcache="y"
_F_gnome_mime="y"
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
groups=('gnome-extra')
archs=('i686' 'x86_64')
sha1sums=('b2321e45466a963cb7bd85e6b648c9648b35af52')

build() {
	Fcd
	Fsed "prefix := /usr/local" "prefix := /usr" INSTALL
#	Fsed "\(.*python.*compile.*\)" "#\1" GNUmakefile
	Fmake
	Fmakeinstall
	Fbuild_gnome_scriptlet
}
