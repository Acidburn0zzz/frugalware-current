pkgname=meld
pkgver=1.3.2
pkgrel=1
pkgdesc="a visual diff and merge tool"
url="http://meld.sourceforge.net/"
depends=('gnome-python')
makedepends=('rarian' 'intltool')
_F_gnome_desktop="y"
_F_gnome_devel="y"
_F_gnome_scrollkeeper="y"
_F_gnome_iconcache="y"
Finclude gnome gnome-scriptlet
groups=('gnome-extra')
archs=('i686' 'x86_64')
sha1sums=('1cb5174385365127d5b2e02343c73fc01c8a89ef')

build() {
	Fcd
	Fpatchall
	Fbuild_slice_scrollkeeper
	Fsed "prefix := /usr/local" "prefix := /usr" INSTALL
#	Fsed "\(.*python.*compile.*\)" "#\1" GNUmakefile
	Fmake
	Fmakeinstall
	Fbuild_gnome_scriptlet
}

# optimization OK
