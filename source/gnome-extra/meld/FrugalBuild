pkgname=meld
pkgver=3.16.2
pkgrel=1
pkgdesc="a visual diff and merge tool"
url="http://meldmerge.org/"
depends=('gtk+3' 'gtksourceview3' 'dbus-python' 'pygobject3-cairo' \
	'gsettings-desktop-schemas' 'dconf')
makedepends=('intltool' 'itstool')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_mime="y"
_F_gnome_glib="y"
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
groups=('gnome-extra')
archs=('i686' 'x86_64')
sha1sums=('a309cb6416cc1cc67cc29bea2da8d81b7bd84f2e')

build() {
	Fcd
	python setup.py build || Fdie
	python setup.py --no-update-icon-cache --no-compile-schemas install  --root=$Fdestdir || Fdie
	Fbuild_gnome_scriptlet
}

