	'pygobject' 'pygtk' 'linuxtv-dvb-apps' 'gst-plugins-bad' \
	'liboil' 'nas' 'gst-plugins-good' 'gst-python')
makedepends=('totem' 'intltool')
Fconfopts="${Fconfopts[@]} --enable-totem-plugin"
groups=('gnome-extra')
archs=('i686' 'x86_64')
