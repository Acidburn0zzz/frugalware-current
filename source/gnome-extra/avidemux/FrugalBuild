pkgname=avidemux
pkgver=2.5.3
pkgrel=2
pkgdesc="A graphical tool to edit video (filter/re-encode/split)"
depends=('a52dec>=0.7.4-2' 'sdl' 'lame' 'faac' 'libxml2' 'xvidcore' 'faad2>=2.7' \
	'mjpegtools>=1.8.0-2' 'libvorbis' 'libogg' 'libmad' 'spidermonkey' \
	'libquicktime>=1.1.3-3' 'x264>=20090416' 'yasm')
groups=('gnome-extra')
options=('scriptlet')
archs=('i686' 'x86_64')
_F_sourceforge_sep="_"
Finclude cmake sourceforge
url="http://fixounet.free.fr/avidemux/"
license="GPL"
source=($source FixBuild.diff)
sha1sums=('073e20007ba5097790cf84cf94b6002c54953395' \
          '3b748bd0fada8be8f761c7bd78359981e62fce83')

## QT4 support - crazy -

build()
{
	unset MAKEFLAGS
	Fcd ${pkgname}_${pkgver}
	CMake_build
}

# optimization OK
