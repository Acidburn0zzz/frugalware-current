# Compiling time: 1.56 SBU
# Maintainer: Janos Kovacs <janny@frugalware.org>

pkgname=avidemux
pkgver=2.5.1
pkgrel=1
pkgdesc="A graphical tool to edit video (filter/re-encode/split)"
url="http://fixounet.free.fr/avidemux/"
depends=('a52dec>=0.7.4-2' 'sdl' 'lame' 'faac' 'libxml2' 'xvidcore' 'faad2>=2.7' \
	'mjpegtools>=1.8.0-2' 'libvorbis' 'libogg' 'libmad' 'spidermonkey' \
	'libquicktime>=1.1.3-3' 'x264>=20090416')
groups=('gnome-extra')
options=('scriptlet')
archs=('i686' 'x86_64')
Finclude cmake
up2date="lynx -dump ${url}download.html|grep -m1 '.tar.gz'|sed 's/ *\(.*\) (.*/\1/'"
source=(http://download.berlios.de/$pkgname/${pkgname}_${pkgver}.tar.gz)
license="GPL"
sha1sums=('50fe78548e0ebf0611d23aa4755f332056520392')

## QT4 support - crazy -

build()
{
	unset MAKEFLAGS
	Fcd ${pkgname}_${pkgver}
	CMake_build
}

# optimization OK
