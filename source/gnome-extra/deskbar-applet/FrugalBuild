pkgname=deskbar-applet
pkgver=2.30.0
pkgrel=1
pkgdesc="The Deskbar applet for gnome"
url="http://www.gnome.org/"
depends=('gnome-python-extras>=2.25.3-2' 'evolution-data-server>=2.30.0' \
	'gnome-desktop>=2.30.0' 'gnome-python-desktop-applet>=2.30.0')
makedepends=('intltool' 'perl-xml-parser' 'gnome-doc-utils')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/deskbar-applet.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_iconcache="y"
Finclude gnome gnome-scriptlet
sha1sums=('548edb36dd58474cb9dbf81ba5bab3f4a10c5418')
unset MAKEFLAGS

build()
{
	Fsed 'xsltproc' 'xsltproc --nonet' help/Makefile.in
	Fbuild_slice_scrollkeeper
	Fmake
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fbuild_gnome_scriptlet
}

# optimization OK
