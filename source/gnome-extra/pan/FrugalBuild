pkgname=pan
pkgver=0.115
pkgrel=1
pkgdesc="A newsreader for GNOME"
url="http://pan.rebelbase.com/"
license="GPL2"
up2date="lynx -dump http://pan.rebelbase.com/download/|grep -m1 'beta'|sed 's/.*pan \(.*\) .*/\1/'"
source=($url/download/releases/$pkgver/source/$pkgname-$pkgver.tar.bz2)
groups=('gnome-extra')
archs=('i686' 'x86_64')
options=('scriptlet' 'force')
depends=('libxml2' 'gmime' 'gtkspell' 'pcre' 'pango')
makedepends=('intltool')
sha1sums=('4df0b9560c32960579ed7cdcbdba1a466ff6fcd1')

if [ "$CARCH" == "x86_64" ]; then
	export CFLAGS="$CFLAGS -fPIC"
	export CXXFLAGS="$CXXFLAGS -fPIC"
fi

# optimization OK
