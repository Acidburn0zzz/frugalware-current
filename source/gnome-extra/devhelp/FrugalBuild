pkgname=devhelp
pkgver=2.28.1
pkgrel=2
pkgdesc="Developer API documentation browser"
url="http://www.gnome.org/"
depends=('libglade' 'libwnck>=2.22.0' 'gconf>=2.28.0' 'xulrunner>=1.9.1.4-1' 'dbus-glib>=0.71-2' 'webkit' 'unique')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64' 'ppc')
_F_gnome_schemas=('/etc/gconf/schemas/devhelp.schemas')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
options=('scriptlet')
Finclude gnome gnome-scriptlet
sha1sums=('8ebaf23722f823eed57b8b6d9fcf83e7b3eaf327')

subpkgs=('devhelp-gedit')
subdescs=('Gedit plugin for Devhelp')
subrodepends=("$pkgname=$pkgver gedit")
subgroups=('gnome-extra')
subarchs=('i686 x86_64 ppc')

build() {
	Fcd
	Fmake --disable-schemas-install --with-gecko=xulrunner
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fsplit devhelp-gedit usr/lib/gedit-2
	Fbuild_gnome_scriptlet
}

# optimization OK
