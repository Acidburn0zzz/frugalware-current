# Compiling time: 0.16 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=mistelix
pkgver=0.32
pkgrel=1
pkgdesc="Mistelix is an open source DVD authoring application with also Theora slideshow creation"
url="http://www.mistelix.org"
up2date="Flasttar $url/Download"
source=($url/files/$pkgname-$pkgver.tar.gz)
depends=('gnome-sharp' 'mono-addins' 'gstreamer' 'gst-ffmpeg' 'gst-plugins-ugly' 'gst-plugins-base-theora')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64' 'ppc')
_F_gnome_desktop=y
_F_gnome_iconcache=y
_F_mono_aot=0
Finclude mono gnome-scriptlet
sha1sums=('86e5481ad976296e0c82ca0963fae40c80ed12bf')

build() {
	unset MAKEFLAGS
	export MONO_ENV_OPTIONS="--gc=sgen"
	Fcd
	#error CS0104
	Fsed "Application.Init ();" "Gtk.Application.Init ();" src/mistelix.cs
	Fmonoexport
	Fbuild
	Fmonocleanup
	Fbuild_gnome_scriptlet
}

# optimization OK
