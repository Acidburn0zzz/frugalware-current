pkgname=xournal
pkgver=0.4.5
pkgrel=1
pkgdesc="Notetaking and sketching application"
depends=('libgnomecanvas' 'poppler-glib')
groups=(gnome-extra)
archs=('i686' 'x86_64')
_F_gnome_iconcache="y"
Finclude sourceforge gnome-scriptlet
sha1sums=('390cb275774469ed1b04b7268dd625bd456c895e')

build() {
	Fbuild
	make DESTDIR="$Fdestdir" desktop-install || Fdie
	Fbuild_gnome_scriptlet
}

# optimization OK
