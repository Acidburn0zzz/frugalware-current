# Compiling time: 0.25 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>
# Contributor: AlexExtreme <alex@alex-smith.me.uk>

pkgname=tomboy
pkgver=0.12.0
pkgrel=1
pkgdesc="A Wiki style desktop note-taking application"
url="http://www.beatniksoftware.com/tomboy"
depends=('gnome-sharp' 'gtkspell' 'gnome-panel>=2.20.0' 'galago-sharp' \
'gmime>=2.2.10' 'ndesk-dbus' 'ndesk-dbus-glib')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/tomboy.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude gnome gnome-scriptlet mono
sha1sums=('48cda3ee4aaa108bccd12b141f41dd57fdaaef58')

build() {
	Fmonoexport
	Fbuild_slice_scrollkeeper
	Fmake --disable-schemas-install --disable-scrollkeeper --enable-desktop-update=no --enable-dbus=yes
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fbuild_gnome_scriptlet
	Fmonocleanup
}

# optimization OK
