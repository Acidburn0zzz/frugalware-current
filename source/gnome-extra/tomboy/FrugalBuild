pkgname=tomboy
pkgver=0.4.1
pkgrel=2
pkgdesc="A Wiki style desktop note-taking application"
url="http://www.beatniksoftware.com/tomboy"
depends=('gnome-sharp' 'dbus-sharp=0.63' 'gtkspell' 'gnome-panel>=2.15.92' 'galago-sharp' 'gmime')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/tomboy.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude gnome gnome-scriptlet mono
sha1sums=('7aa9814b0d5567f2af3d43b32a099a1e9cf3c1b3')

build() {
	Fmonoexport
	Fbuild_slice_scrollkeeper
	Fmake --disable-schemas-install --disable-scrollkeeper --enable-desktop-update=no
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fbuild_gnome_scriptlet
	Fmonocleanup
}

# optimization OK
