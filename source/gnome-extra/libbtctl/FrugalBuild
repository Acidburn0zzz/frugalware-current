pkgname=libbtctl
pkgver=0.6.0
pkgrel=2
pkgdesc="A GObject wrapper for Bluetooth functionality"
url="http://usefulinc.com/software/gnome-bluetooth/"
depends=('glib2' 'bluez-utils>=3.5' 'bluez-libs>=3.5' 'openobex>=1.3-3' 'python' \
        'gtk1-sharp' 'pygtk' 'docbook-xsl' 'mono')
makedepends=('pkgconfig' 'intltool' 'gtk-doc')
groups=('gnome-extra')
archs=('i686' 'x86_64')
Finclude gnome mono
source=(${source[@]} libbtctl-0.6.0-libdir.patch libbtctl-0.6.0-aclocal_openobex.patch)
sha1sums=('b4c4ada56b06cde5a8b15f68414de572dce1a467' \
	  '52e038f9f9c398eb4b2984a8f076830c4fee73b0' \
	  '8ff03030033ae89b8878f8cb61b65dd5a246ade6')

build() {
	unset MAKEFLAGS
	Fmonoexport
	Fcd
	Fpatchall
	Fsed 'AM_PATH_OPENOBEX(1.0.0)' 'PKG_CHECK_MODULES(OPENOBEX,openobex)' configure.in
	Fautoconfize
	Fconf
	Fsed 'libext="a' '& la' libtool
	make || Fdie
	Fmakeinstall
	Fmonocleanup
}

# optimization OK
