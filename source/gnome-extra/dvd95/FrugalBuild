pkgname=dvd95
pkgver=1.5p2
pkgrel=1
pkgdesc="A DVD9 to DVD5 converter"
_F_gnome_desktop="y"
Finclude gnome-scriptlet sourceforge
depends=('libglade>=2.6.4-2' 'libdvdread' 'libdvdcss' 'libgnomeui>=2.24.1-2' \
	'mpeg2dec' 'mencoder' 'mplayer' 'ffmpeg')
makedepends=('perl-xml-parser' 'intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=161064 | Flasttar"
sha1sums=('a308a626d4d3e1499e77bb273306a1494551fb5d')

build() {
	# Fix for pixmap bug :P
	Fsed "dvd95/dvd9548.png" "/usr/share/pixmaps/dvd95/dvd9548.png" dvd95.desktop
	Fbuild
	Fbuild_gnome_scriptlet
}

# optimization OK
