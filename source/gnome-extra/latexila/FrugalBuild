pkgdesc="A LaTeX development environment."
depends=('gtksourceview' 'gtkspell' 'libgee' 'unique1' 'gsettings-desktop-schemas')
makedepends=('vala' 'itstool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_ext=".tar.xz"
_F_gnome_glib="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_cmake_confopts="-DWITH_GNOME=ON"
Finclude cmake gnome gnome-scriptlet
