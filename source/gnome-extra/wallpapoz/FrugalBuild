pkgname=wallpapoz
pkgver=0.4rc2
pkgrel=1
pkgdesc="Gnome Multi Backgrounds and Wallpapers Configuration Tool."
url="http://wallpapoz.akbarhome.com/"
depends=('pygtk' 'gnome-python' 'gnome-python-desktop' 'imaging')
groups=('gnome-extra')
archs=('i686')
up2date="lynx -dump $url/download.html | grep tar.bz2 -m1 | Flasttarbz2"
source=($url/files/$pkgname-$pkgver.tar.bz2)
_F_cd_path="$pkgname-${pkgver/rc2/}"
sha1sums=('983fc4107fec7ebeb71fede7f2eda4b4f3ae2192')

build()
{
	Fcd
	Fmkdir /usr
	python setup.py --installdir $Fdestdir/usr/ install
}

