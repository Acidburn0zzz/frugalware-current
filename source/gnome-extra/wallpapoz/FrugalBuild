# Compiling Time: 0.01 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=wallpapoz
pkgver=0.3
pkgrel=1
pkgdesc="Gnome Multi Backgrounds and Wallpapers Configuration Tool."
url="http://wallpapoz.akbarhome.com/"
depends=('pygtk')
groups=('gnome-extra')
archs=('i686')
up2date="lynx -dump $url/download.html | grep tar.bz2 -m1 | Flasttarbz2"
source=($url/files/$pkgname-$pkgver.tar.bz2)

build()
{
	Fcd

	# Don't use the install script, we install it manually.
	Fmkdir /usr/{bin,share/{wallpapoz,applications}}
	Fexerel src/*.py /usr/bin/
	Ffilerel share/wallpapoz/*.glade /usr/share/wallpapoz/
	Ficonrel share/wallpapoz/wallpapoz.png
	Ffilerel share/wallpapoz/wallpapoz.desktop /usr/share/applications/
}

sha1sums=('1cbc4cda74447e5bbf4d97c7e677518b7e33fdd5')
