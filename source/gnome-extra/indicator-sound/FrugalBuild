# Compiling Time: 0.05 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=indicator-sound
pkgver=0.5.1
pkgrel=1
pkgdesc="A unified sound menu"
url="https://launchpad.net/indicator-sound"
depends=('pulseaudio' 'libdbusmenu>=0.3.90' 'libindicator>=0.3.15' 'gconf' 'libuuid' 'ido>=0.2.0' 'libindicate>=0.4.4-2' 'libgee' 'glib2>=2.26.0-2')
makedepends=('intltool'  'vala')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/indicator-sound.schemas')
Finclude gnome-scriptlet
up2date="Flasttar $url"
source=($url/third/$pkgver/+download/$pkgname-$pkgver.tar.gz)
sha1sums=('3a45823cf9a2337664e7adf28dd40f3886aad1b7')

build() {
   Fcd
   export CFLAGS="$CFLAGS -I/usr/include/gio-unix-2.0"
   Fbuild
   Fbuild_gnome_scriptlet
}

