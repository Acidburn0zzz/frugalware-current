pkgname=indicator-sound
pkgver=0.6.0
pkgrel=1
pkgdesc="A unified sound menu"
url="https://launchpad.net/indicator-sound"
depends=('pulseaudio' 'libdbusmenu-gtk>=0.3.98-3' 'libindicator>=0.3.19' 'dconf' 'libuuid' \
    'ido>=0.2.0' 'libindicate>=0.4.93' 'libgee' 'glib2>=2.28.1-2' 'libnotify>=0.7.1')
makedepends=('intltool'  'vala' 'gconf')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
Finclude gnome-scriptlet
up2date="Flasttar $url"
source=($url/third/$pkgver/+download/$pkgname-$pkgver.tar.gz)
sha1sums=('73f40b4e2f7b6ad6ce739011dbd97fcaced68699')

build() {
   Fcd
   export CFLAGS="$CFLAGS -I/usr/include/gio-unix-2.0"
   Fbuild
   Fbuild_gnome_scriptlet
}

