pkgname=gnome-mplayer
pkgver=0.6.3
pkgrel=1
pkgdesc="A media player for GNOME that uses MPlayer."
url="http://dekorte.homeip.net/download/gnome-mplayer"
archs=('i686' 'x86_64')
groups=('gnome-extra')
options=('scriptlet')
depends=('atk' 'pango' 'freetype2' 'libxau' 'libxdmcp' 'dbus-glib' 'glibc' 'gconf' 'libxdamage' 'libxinerama' 'libxi' 'libxrandr' 'libxcursor' 'mplayer')
Finclude googlecode
_F_gnome_schemas=('/etc/gconf/schemas/gnome-mplayer.schemas')
_F_gnome_desktop="y"
Finclude gnome-scriptlet
sha1sums=('dbd489005add7a902c4dcd9ae4f9ab63fda7045c')

build ()
{
	Fbuild
	Fbuild_gnome_scriptlet
	Frm usr/share/doc/$pkgname
}

# optimization OK
