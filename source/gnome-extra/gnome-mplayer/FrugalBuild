# Compiling Time: 0.08 SBU
# Maintainer: detto <detto_o@freenet.de>

pkgname=gnome-mplayer
pkgver=0.4.7
pkgrel=1
pkgdesc="A media player for GNOME that uses MPlayer."
url="http://dekorte.homeip.net/download/gnome-mplayer"
archs=('i686')
groups=('gnome-extra')
depends=('libgnomeui' 'mplayer')
up2date="lynx -dump $url | grep ".tar.gz" -m1 | cut -d '-' -f4 | sed -n 's|.tar.gz||p'"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('bb447baad2ada991bb75f0f4cc6a1d2824dc3c31')
_F_gnome_schemas=('/etc/gconf/schemas/gnome-mplayer.schemas')
Finclude gnome-scriptlet

build () {
		Fbuild
		Fbuild_gnome_scriptlet
		Frm usr/share/doc/$pkgname
}

# optimization OK
