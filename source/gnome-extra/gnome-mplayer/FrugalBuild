# Contributor: detto <detto_o@freenet.de>

pkgname=gnome-mplayer
pkgver=0.5.3
pkgrel=1
pkgdesc="A media player for GNOME that uses MPlayer."
url="http://dekorte.homeip.net/download/gnome-mplayer"
archs=('i686' 'x86_64')
groups=('gnome-extra')
options=('scriptlet')
depends=('libgnomeui' 'mplayer')
up2date="lynx -dump http://dekorte.homeip.net/download/download.php#gnome-mplayer | grep $pkgname | grep -m1 tar.gz | Flasttar"
source=($url/$pkgname-$pkgver.tar.gz)
_F_gnome_schemas=('/etc/gconf/schemas/gnome-mplayer.schemas')
Finclude gnome-scriptlet
sha1sums=('57524f771e7c12f410cda1355c75e87f42bcfae2')

build ()
{
	Fbuild
	Fbuild_gnome_scriptlet
	Frm usr/share/doc/$pkgname
}

# optimization OK
