# Compiling Time: 0.03 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=gnome-theme-wild-shine
pkgver=1.3.2
pkgrel=1
pkgdesc="Wild Shine theme for Gnome."
url="http://www.bisigi-project.org"
depends=('gtk+2-engines-murrine' 'xcursor-theme-vanilla-dmz')
makedepends=('imagemagick')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_archive_name="wild-shine-theme"
Fpkgversep="_"
up2date="elinks -dump 'https://launchpad.net/~bisigi/+archive/ppa/+packages' | Flasttar | sed 's/.karmic.ppa1+nmu1//g'"
source=("https://launchpad.net/~bisigi/+archive/ppa/+files/wild-shine-theme_1.3.2.karmic.ppa1+nmu1.tar.gz" \
	"logo_fw128.png" \
	"wild-shine.patch")
sha1sums=('98f579b4ef86a96db2189e410fb6fffce9e145b7' \
          '46d23ed89b5da7c47ef931c2f2b7df62b3f17152' \
          'f93150389542ad070bed12098e988f4f8b4d83f4')

build() {
	Fcd "wild-shine-theme"
	Fmkdir usr/share/{themes,icons,pixmaps/backgrounds/gnome/nature,gnome-background-properties,emerald/themes}
	tar -xzf Gtk/wild-shine.tar.gz -C Gtk/ || Fdie

	#Icons theme
	tar -xjf Icons/wild-shine.tar.bz2 -C Icons/ || Fdie

	# fix some bad file permissions
	find Icons/ -type f -exec chmod -R 644 {} \;
	local _w=""
	for _w in {16x16,22x22,24x24,32x32}; do
		convert -resize $_w $Fsrcdir/logo_fw128.png Icons/wild-shine/$_w/places/distributor-logo.png
		convert -resize $_w $Fsrcdir/logo_fw128.png Icons/wild-shine/$_w/places/gnome-main-menu.png
		convert -resize $_w $Fsrcdir/logo_fw128.png Icons/wild-shine/$_w/places/start-here.png
	done
	install -D -m644 $Fsrcdir/logo_fw128.png Icons/wild-shine/scalable/places/distributor-logo.png || Fdie
	install -D -m644 $Fsrcdir/logo_fw128.png Icons/wild-shine/scalable/places/gnome-main-menu.png || Fdie
	install -D -m644 $Fsrcdir/logo_fw128.png Icons/wild-shine/scalable/places/start-here.png || Fdie

	#Emerald theme
	mkdir Emerald/wild-shine || Fdie
	tar -xzf Emerald/wild_shine.emerald -C Emerald/wild-shine || Fdie

	# install files
	Fpatchall
	Fcprel Gtk/wild-shine/ usr/share/themes/
	Fcprel Icons/wild-shine/ usr/share/icons
	Finstallrel 644 Wallpaper/wild_shine.png usr/share/pixmaps/backgrounds/gnome/nature/
	Finstallrel 644 Wallpaper/wild-shine-wallpaper.xml usr/share/gnome-background-properties
	Fcprel Emerald/wild-shine usr/share/emerald/themes/
}
