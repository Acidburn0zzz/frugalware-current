# Compiling Time: 0.20 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=straw
pkgver=0.26
pkgrel=2
pkgdesc="Straw is a desktop news aggregator for the GNOME environment"
url="http://gnome.org/projects/straw/index.html"
depends=('gnome-python' 'gnome-python-extras' 'gnome-python-desktop' 'gconf' 'libgtkhtml' 'intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
nondevel=1
_F_gnome_schemas=('/etc/gconf/schemas/straw.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
Finclude gnome gnome-scriptlet
sha1sums=('89bac7a6e68d0e790cc443e8e1cef83282f6b569')

build()
{
	Fcd
	python setup.py install --disable-modules-check --disable-schemas-install \
	--prefix=/usr --root=$Fdestdir
	Fbuild_gnome_scriptlet
}

# optimization OK
