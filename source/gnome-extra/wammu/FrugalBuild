# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=wammu
pkgver=0.28
pkgrel=1
pkgdesc="Wammu is mobile phone manager"
url="http://wammu.eu/"
depends=('wxpython-u8' 'python-gammu' 'pybluez' 'gnome-bluetooth')
groups=('gnome-extra')
archs=('i686' 'x86_64')
source=("http://dl.cihar.com/wammu/latest/$pkgname-$pkgver.tar.bz2")
up2date="lynx -dump http://wammu.eu/download/ | Flasttarbz2"
options=('scriptlet')
sha1sums=('17072c2fd6d0acd7ab0fcad4f446b1edeb33af61')

build(){
	export SKIPWXCHECK=yes
	Fcd
	rm Makefile || Fdie
	Fmake
	Fmakeinstall
}
