# Compiling Time: 0.03 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=gnome-theme-exotic
pkgver=1.4.2
pkgrel=1
pkgdesc="Exotic theme for Gnome."
url="http://www.bisigi-project.org"
depends=('gtk+2-engines-murrine')
makedepends=('imagemagick')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_archive_name="exotic-theme"
Fpkgversep="_"
up2date="elinks -dump 'https://launchpad.net/~bisigi/+archive/ppa/+packages' | Flasttar | sed 's/.karmic.ppa1+nmu1//g'"
source=("https://launchpad.net/~bisigi/+archive/ppa/+files/exotic-theme_1.4.2.karmic.ppa1+nmu1.tar.gz" \
	"logo_fw128darkorange.png" \
	"exotic.patch")
sha1sums=('efd940d27e8cd9296e5c418f5a6fed80dcff92d7' \
          '1d0781d0f67b2365baba5c78c3d6f8d982c10006' \
          '7d2511b56d76a4f1b4c696bd9a20741f2ac1bece')

build() {
	Fcd "exotic-theme"
	Fmkdir usr/share/{themes,icons,pixmaps/backgrounds/gnome/nature,gnome-background-properties,emerald/themes}
	tar -xzf Gtk/exotic.tar.gz -C Gtk/ || Fdie

	#Icons theme
	tar -xjf Icons/exotic.tar.bz2 -C Icons/ || Fdie

	# fix some bad file permissions
	find Icons/ -type f -exec chmod -R 644 {} \;
	local _w=""
	for _w in {16x16,22x22,24x24,32x32}; do
		convert -resize $_w $Fsrcdir/logo_fw128darkorange.png Icons/exotic/$_w/places/distributor-logo.png
		convert -resize $_w $Fsrcdir/logo_fw128darkorange.png Icons/exotic/$_w/places/gnome-main-menu.png
		convert -resize $_w $Fsrcdir/logo_fw128darkorange.png Icons/exotic/$_w/places/start-here.png
	done
	install -D -m644 $Fsrcdir/logo_fw128darkorange.png Icons/exotic/scalable/places/distributor-logo.png || Fdie
	install -D -m644 $Fsrcdir/logo_fw128darkorange.png Icons/exotic/scalable/places/gnome-main-menu.png || Fdie
	install -D -m644 $Fsrcdir/logo_fw128darkorange.png Icons/exotic/scalable/places/start-here.png || Fdie

	#Emerald theme
	mkdir Emerald/exotic || Fdie
	tar -xzf Emerald/exotic.emerald -C Emerald/exotic || Fdie

	# install files
	Fpatchall
	Fcprel Gtk/exotic/ usr/share/themes/
	Fcprel Icons/exotic/ usr/share/icons
	Finstallrel 644 Wallpaper/exotic.jpg usr/share/pixmaps/backgrounds/gnome/nature/
	Finstallrel 644 Wallpaper/exotic-wallpaper.xml usr/share/gnome-background-properties
	Fcprel Emerald/exotic usr/share/emerald/themes/
}
