# Compiling Time: 0.03 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=gnome-theme-exotic
pkgver=1.5.0
pkgrel=1
pkgdesc="Exotic theme for Gnome."
url="http://www.bisigi-project.org"
depends=('gtk+2-engines-murrine')
makedepends=('imagemagick')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_archive_name="exotic-theme"
Fpkgversep="_"
up2date="elinks -dump 'https://launchpad.net/~bisigi/+archive/ppa/+packages' | Flasttar | sed 's/.lucid.ppa2+nmu1//g'"
source=("https://launchpad.net/~bisigi/+archive/ppa/+files/$_F_archive_name$Fpkgversep$pkgver.lucid.ppa2+nmu1.tar.gz" \
	"ftp://ftp.frugalware.org/pub/other/people/devil505/artwork/frugal-icon48.svg" \
	"exotic.patch")
sha1sums=('fee0b4bb3aec4df4ce15d16b4c0ebe68cda388bf' \
          '5864eed09d44dbc2c7b5b6e5bca3bd965d3bb25f' \
          '7d2511b56d76a4f1b4c696bd9a20741f2ac1bece')

build() {
	Fcd "exotic-theme"
	Fmkdir usr/share/{themes,icons,pixmaps/backgrounds/gnome/nature,gnome-background-properties,emerald/themes}
	tar -xzf Gtk/exotic.tar.gz -C Gtk/ || Fdie

	#Icons theme
	tar -xjf Icons/exotic.tar.bz2 -C Icons/ || Fdie

	# fix some bad file permissions
	find Icons/ -type f -exec chmod -R 644 {} \;
	install -D -m644 $Fsrcdir/frugal-icon48.svg Icons/exotic/scalable/places/distributor-logo.svg || Fdie
	install -D -m644 $Fsrcdir/frugal-icon48.svg Icons/exotic/scalable/places/gnome-main-menu.svg || Fdie
	install -D -m644 $Fsrcdir/frugal-icon48.svg Icons/exotic/scalable/places/start-here.svg || Fdie

	#Emerald theme
	mkdir Emerald/exotic || Fdie
	tar -xzf Emerald/exotic.emerald -C Emerald/exotic || Fdie

	# install files
	Fpatchall
	Fcprel Gtk/exotic/ usr/share/themes/
	Fcprel Icons/exotic/ usr/share/icons
	Finstallrel 644 Wallpaper/exotic.jpg usr/share/pixmaps/backgrounds/gnome/nature/
	Finstallrel 644 Wallpaper/exotic-wallpaper.xml usr/share/gnome-background-properties
	Fcprel Emerald/exotic usr/share/emerald/themes/
}
