# Compiling Time: 0.25 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=glipper
pkgver=0.89
pkgrel=1
pkgdesc="Glipper is a clipboard manager for Gnome"
url="http://glipper.sourceforge.net"
depends=('gtk+2')
replaces=('gnome-clipboard-daemon')
makedepends=('intltool' 'perl-xml')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_desktop="y"
Finclude sourceforge gnome-scriptlet
up2date="lynx -dump http://glipper.sourceforge.net | grep 'Current version' | sed 's/Current version : //g' | sed 's/ //g'"
source=(${source[@]} glipper.desktop)
sha1sums=('af1ce1887954133fda5751676379299b6f9ea966' \
	  '5053381c1ec575f40ec92545933dbdf52ffcebca')

build() {
	Fbuild
	Ffile /usr/share/gnome/autostart/glipper.desktop
	Fbuild_gnome_scriptlet
}

# optimization OK
