pkgname=monodoc
pkgver=1.2.6
pkgrel=1
pkgdesc="Documentation for mono's .Net class library"
url="http://www.mono-project.com/"
depends=('gtk2-sharp' 'desktop-file-utils' 'mono>=1.2.6')
makedepends=('pkgconfig')
groups=('gnome-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
Finclude mono
up2date="lynx -dump 'http://go-mono.com/sources-stable/'|grep -m1 'monodoc-'|sed 's/.*-\(.*\).zip/\1/'"
source=(http://go-mono.com/sources/$pkgname/$pkgname-$pkgver.zip)
sha1sums=('653ad52a26e881ce056c38de4d070040c69ef969')

unset MAKEFLAGS
