# Compiling Time: 0.16 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=galaxium
pkgver=0.7.2
pkgrel=1
pkgdesc="Galaxium is an instant messenger application designed for the GNOME desktop. "
depends=('mono' 'mono-addins' 'gtk2-sharp' 'libcommon' 'gst-ffmpeg' 'gecko-sharp' \
	'ndesk-dbus-glib' 'libanculus-sharp' 'swfdec')
options=('scriptlet')
groups=('gnome-extra')
archs=('i686')
_F_googlecode_sep="_"
_F_gnome_desktop="y"
Finclude googlecode gnome-scriptlet mono
Fconfopts="$Fconfopts \
	--enable-gecko \
	--disable-webkit"
sha1sums=('f03957896a616a282909240ce242423b0d43a86f')

build() {
	Fcd
	Fmonoexport
	sh ./autogen.sh $Fconfopts || Fdie
	Fbuild
	Fmonocleanup
	Fbuild_gnome_scriptlet
}
