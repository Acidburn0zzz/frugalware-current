# Compiling Time: 0.16 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=galaxium
pkgver=0.7.4
pkgrel=1
pkgdesc="Galaxium is an instant messenger application designed for the GNOME desktop. "
depends=('mono-addins' 'gtk2-sharp' 'gst-ffmpeg' 'gecko-sharp' \
	'ndesk-dbus-glib' 'libanculus-sharp' 'swfdec')
options=('scriptlet')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_googlecode_sep="_"
_F_gnome_desktop="y"
Finclude googlecode gnome-scriptlet mono
Fconfopts="$Fconfopts \
	--enable-gecko \
	--disable-webkit"
sha1sums=('2b288b0800041b0336b172d68dfa9936d9346520')

build() {
	Fcd
	Fmonoexport
	sh ./autogen.sh $Fconfopts || Fdie
	Fbuild
	Fmonocleanup
	Fbuild_gnome_scriptlet
}
