pkgname=ccsm
_F_compiz_name=compiz-$pkgname
Finclude compiz
pkgrel=2
pkgdesc="CompizConfig settings manager"
makedepends=('intltool')
rodepends=('pygtk>=2.16.0-5' 'compizconfig-python>=0.9.4')
groups=('gnome-extra')
replaces=('gset-compiz' 'gnome-compiz-manager')
archs=('i686' 'x86_64')
_F_gnome_iconcache=y
Finclude gnome-scriptlet
sha1sums=('bb185bb0817a4308abbe48e2e08edbc6531e276a')
_F_cd_path="$pkgname"

build()
{
	Fcd
	python setup.py install --root=$Fdestdir --prefix=/usr
	Fbuild_gnome_scriptlet
}

