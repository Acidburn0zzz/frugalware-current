pkgname=ccsm
Finclude compiz
pkgver=0.8.4
source=(http://releases.compiz-fusion.org/$pkgver/$pkgname-$pkgver.tar.bz2)
pkgrel=1
pkgdesc="CompizConfig settings manager"
makedepends=('intltool')
rodepends=('pygtk>=2.14.1-2' 'compizconfig-python>=0.8.2')
groups=('gnome-extra')
replaces=('gset-compiz')
archs=('i686' 'x86_64')
_F_gnome_iconcache=y
Finclude gnome-scriptlet
sha1sums=('1b4d740f8f45d6c58d8de09eda5de632c4393927')

build()
{
	Fcd
	python setup.py install --root=$Fdestdir --prefix=/usr
	Fbuild_gnome_scriptlet
}

