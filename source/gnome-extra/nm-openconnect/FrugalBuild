pkgname=nm-openconnect
_F_gnome_name=NetworkManager-openconnect
pkgver=1.2.4
pkgrel=1
pkgdesc="Open Cisco AnyConnect VPN plugin for Network Manager"
depends=('nm-connection-editor>=1.1.92' 'libsecret>=0.18.5' 'openconnect')
makedepends=('perl-xml-parser' 'intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_iconcache="y"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
sha1sums=('5ef760c9ea42605a1e4646b21cf240204ec07518')
_F_cd_path=$_F_gnome_name-$pkgver

build() {
	Fcd
	Fsed "nm-openconnect" "netdev" nm-openconnect-service.conf
	Fbuild
}

# optimization OK
