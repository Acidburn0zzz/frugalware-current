# Compiling Time: 0.69 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=gnote
pkgver=0.8.1
pkgrel=1
pkgdesc="Gnote is a port of Tomboy to C++"
groups=('gnome-extra')
depends=('glibmm' 'gtk+3' 'gtkmm' 'libxml++' 'gconf>=2.28.1' 'gtkspell3' 'libboost>=1.46.1' \
	'dbus-glib' 'openssl>=1.0.0')
makedepends=('boost' 'intltool' 'gnome-doc-utils')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_gnome_glib="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_devel="y"
Finclude gnome gnome-scriptlet
Fconfopts="$Fconfopts --enable-dbus --disable-applet"
sha1sums=('4388be8ce739b4af3414811a4c17dc04875164a1')

build()
{
	export CXXFLAGS="$CXXFLAGS -DBOOST_FILESYSTEM_VERSION=2"
	Fbuild
	Fbuild_gnome_scriptlet
}

