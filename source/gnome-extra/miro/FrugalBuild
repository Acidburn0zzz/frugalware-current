pkgname=miro
pkgver=3.5.1
pkgrel=1
pkgdesc="The free and open source internet TV platform."
url="http://www.getmiro.com/"
depends=('gtk+2>=2.20.0-2' 'pygtk>=2.16.0-5' 'dbus-python' 'pyrex' \
	'xine-lib' 'db>=4.7.25' 'bsddb3>=4.7.1'	'nss>=3.12' \
	'nspr>=4.7.1' 'webkit' 'gnome-python-extras>=2.25.3-5' \
	'pysqlite2' 'libtorrent-rasterbar')
groups=('gnome-extra')
replaces=('democracy')
conflicts=('democracy')
archs=('i686' 'x86_64' 'ppc')
options=('scriptlet')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_gnome_mime="y"
Finclude gnome-scriptlet
up2date="lynx -dump 'http://ftp.osuosl.org/pub/pculture.org/miro/src/?C=M;O=A'| Flasttar"
source=(http://ftp.osuosl.org/pub/pculture.org/$pkgname/src/$pkgname-$pkgver.tar.gz)
sha1sums=('0f5c2a307e7040c9c2895ee9a2d1c3ff99d34e9e')

build()
{
	Fcd
	PKG_CONFIG_PATH=$PKG_CONFIG_PATH:$Fsrcdir
	cd linux || Fdie
	python setup.py install --root=$Fdestdir || Fdie
	Fbuild_gnome_scriptlet
}

# optimization OK
