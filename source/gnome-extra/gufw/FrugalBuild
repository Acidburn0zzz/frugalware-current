# Compiling Time: 0 SBU
# Maintainer: Cedrick Hannier alias Cedynamix <cedynamix@gmail.com>

pkgname=gufw
pkgver=9.04.2
pkgrel=2
pkgdesc="Gufw is an easy to use Linux firewall powered by ufw"
url="http://launchpad.net/gui-ufw"
depends=('ufw' 'gnome-python')
options=('scriptlet')
groups=('gnome-extra')
archs=('i686' 'x86_64')
Fpkgversep="_"
_F_cd_path="gui-ufw"
up2date="elinks -dump http://launchpad.net/gui-ufw/+download | Flasttar | sed 's/_all//'"
source=(http://launchpad.net/gui-ufw/gufw-9.04-jaunty/9.04/+download/$pkgname'_'$pkgver'-'all.tar.gz gufw.desktop)
sha1sums=('2955b284d4b8de9a1404e81edc26fbf8ef532e94' \
          '1b6eb36a64c1971e3f3186aff8b4ea9cf37ff7b1')

build(){
	Fcd
	Fmkdir usr/{bin,share/{applications,pixmaps,$pkgname}}
	Ffile $Fmenudir/$pkgname.desktop
	Fcp gui-ufw/* usr/share/$pkgname
	Fcp gui-ufw/locale-langpack/ /usr/share/
	Fcp gui-ufw/pixmaps/* /usr/share/pixmaps
	Fsed "/usr/share/pixmaps/gufw" "/usr/share/gufw/pixmaps" $Fdestdir/usr/share/gufw/model/Variable.py
	Fln /usr/share/$pkgname/$pkgname.py /usr/bin/$pkgname
	Fln /usr/share/$pkgname/icon/$pkgname'_'menu.png /usr/share/pixmaps/
}
