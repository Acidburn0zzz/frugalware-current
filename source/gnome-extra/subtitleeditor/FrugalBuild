# Compiling Time: 0.43 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=subtitleeditor
pkgver=0.13.6
pkgrel=1
pkgdesc="Subtitle Editor is a GTK+2 tool to edit subtitles."
url="http://kitone.free.fr/subtitleeditor"
license="GPL"
depends=('gtkmm' 'gtk+2' 'pcre' 'enchant' 'libglademm' 'gst-plugins-base' 'gst-plugins-good')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep -m1 tar.gz | Flasttar"
source=($url/files/$pkgname-$pkgver.tar.gz)
Fconfopts="${Fconfopts[@]} --enable-cairo"
sha1sums=('ea932a3530bd70d379ea48d2ed316f0f55059a01')

build()
{
	Fbuild

	# Copy the application icon
	Fmkdir /usr/share/pixmaps
	Fcp /usr/share/$pkgname/$pkgname-icon.png /usr/share/pixmaps/
}

# optimization OK
