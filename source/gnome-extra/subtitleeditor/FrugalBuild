makedepends=('intltool')
depends=('freetype2' 'libxau' 'libxdmcp' 'libglademm' 'libxml++' 'enchant' 'pcre' 'gst-plugins-base' 'libxdamage' 'libxext' 'gst-plugins-good')
options=('scriptlet')
_F_gnome_iconcache="y"
