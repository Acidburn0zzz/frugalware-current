# Compiling Time: 0.03 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=gnome-theme-airlines
pkgver=1.3.2
pkgrel=1
pkgdesc="Airlines theme for Gnome."
url="http://www.bisigi-project.org"
depends=('gtk+2-engines-murrine' 'xcursor-theme-vanilla-dmz')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_archive_name="airlines-theme"
Fpkgversep="_"
up2date="elinks -dump 'https://launchpad.net/~bisigi/+archive/ppa/+packages' | Flasttar | sed 's/.karmic.ppa1+nmu1//g'"
source=("https://launchpad.net/~bisigi/+archive/ppa/+files/airlines-theme_1.3.0.karmic.ppa1+nmu1.tar.gz" \
		"logo-fw64.svg" \
		"logo-fw48.svg" \
		"logo-fw32.svg" \
		"logo-fw24.svg" \
		"logo-fw22.svg" \
		"logo-fw16.svg" \
		"airlines.patch")
sha1sums=('71ab65ac6f7bd217b597b4d2e40dacc27ca03420' \
          'b5098c2f79a40307b644d221a0d99eb6f0740dda' \
          '2388a17d2b88b8b09120575662cb23ddbd7272ce' \
          '60baeca148deed862daebe737f604c681fc23874' \
          '0a17e361c17e52a2731a3248eed6e17e744397bc' \
          '3af0e18a839a38feabac8185c3c79df689adb3a8' \
          '996186e9f45c6ae7b128bfcac5b91d8198aa6f64' \
          '56861417178462b7af9bc981eed1a3523d1d1373')

build() {
	Fcd "airlines-theme"
	Fmkdir usr/share/{themes,icons,backgrounds/airlines,gnome-background-properties}
	tar -xzf Gtk/airlines.tar.gz -C Gtk/ || Fdie
	rm -f Gtk/airlines/index.theme~ || Fdie

	#Icons theme
	tar -xjf Icons/airlines.tar.bz2 -C Icons/ || Fdie

	# fix dir permission
	chmod 755 Icons/airlines || Fdie
	local _w=""
	for _w in {64,48,32,24,22,16}; do
		install -D -m644 $Fsrcdir/logo-fw$_w.svg Icons/airlines/places/$_w/distributor-logo.svg
		install -D -m644 $Fsrcdir/logo-fw$_w.svg Icons/airlines/places/$_w/gnome-main-menu.svg
		install -D -m644 $Fsrcdir/logo-fw$_w.svg Icons/airlines/places/$_w/start-here.svg
		install -D -m644 $Fsrcdir/logo-fw$_w.svg Icons/airlines/places/$_w/novell-button.svg
	done

	# install files
	Fpatchall
	Fcprel Gtk/airlines/ usr/share/themes/
	Fcprel Icons/airlines/ usr/share/icons
	Finstallrel 644 Wallpaper/airlines/airlines.jpg usr/share/backgrounds/airlines/
	Finstallrel 644 Wallpaper/airlines/airlines2.jpg usr/share/backgrounds/airlines/
	Finstallrel 644 Wallpaper/airlines/airlines.xml usr/share/backgrounds/
	Finstallrel 644 Wallpaper/airlines/airlines-wallpaper.xml usr/share/gnome-background-properties/
}
