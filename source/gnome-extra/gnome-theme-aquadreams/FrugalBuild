# Compiling Time: 0.03 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=gnome-theme-aquadreams
pkgver=1.7.2
pkgrel=1
pkgdesc="Aquadreams theme for Gnome."
url="http://www.bisigi-project.org"
depends=('gtk+2-engines-murrine')
makedepends=('imagemagick')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_archive_name="aquadreams-theme"
Fpkgversep="_"
up2date="elinks -dump 'https://launchpad.net/~bisigi/+archive/ppa/+packages' | Flasttar | sed 's/.karmic.ppa1+nmu1//g'"
source=("https://launchpad.net/~bisigi/+archive/ppa/+files/aquadreams-theme_1.7.2.karmic.ppa1+nmu1.tar.gz" \
	"logo_fw128.png" \
	"aquadreams.patch")
sha1sums=('4657b9d2ab12a6a875eb9124381f4b3a30ee4dbc' \
          '46d23ed89b5da7c47ef931c2f2b7df62b3f17152' \
          '5774908207e748356d6a80c5a5e867ec8cde81b6')

build() {
	Fcd "aquadreams-theme"
	Fmkdir usr/share/{themes,icons,pixmaps/backgrounds/gnome/other,gnome-background-properties,emerald/themes}
	tar -xzf Gtk/aquadreams.tar.gz -C Gtk/ || Fdie

	#Icons theme
	tar -xjf Icons/aquadreams.tar.bz2 -C Icons/ || Fdie

	# fix some bad file permissions
	find Icons/ -type f -exec chmod -R 644 {} \;
	local _w=""
	for _w in {16x16,22x22,24x24,32x32}; do
		convert -resize $_w $Fsrcdir/logo_fw128.png Icons/aquadreams/$_w/places/distributor-logo.png
		convert -resize $_w $Fsrcdir/logo_fw128.png Icons/aquadreams/$_w/places/gnome-main-menu.png
		convert -resize $_w $Fsrcdir/logo_fw128.png Icons/aquadreams/$_w/places/start-here.png
	done
	install -D -m644 $Fsrcdir/logo_fw128.png Icons/aquadreams/scalable/places/distributor-logo.png || Fdie
	install -D -m644 $Fsrcdir/logo_fw128.png Icons/aquadreams/scalable/places/gnome-main-menu.png || Fdie
	install -D -m644 $Fsrcdir/logo_fw128.png Icons/aquadreams/scalable/places/start-here.png || Fdie

	#Emerald theme
	mkdir Emerald/aquadreams || Fdie
	tar -xzf Emerald/aquadreams.emerald -C Emerald/aquadreams || Fdie

	# install files
	Fpatchall
	Fcprel Gtk/aquadreams/ usr/share/themes/
	Fcprel Icons/aquadreams/ usr/share/icons
	Finstallrel 644 Wallpaper/AquaDreams.jpg usr/share/pixmaps/backgrounds/gnome/other/
	Finstallrel 644 Wallpaper/AquaDreams-wide.jpg usr/share/pixmaps/backgrounds/gnome/other/
	Finstallrel 644 Wallpaper/aquadreams-wallpaper.xml usr/share/gnome-background-properties
	Fcprel Emerald/aquadreams usr/share/emerald/themes/
}
