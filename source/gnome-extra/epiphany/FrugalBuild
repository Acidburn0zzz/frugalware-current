pkgname=epiphany
pkgver=2.15.92
pkgrel=1
pkgdesc="GNOME webbrowser based on the mozilla rendering engine"
url="http://www.gnome.org/projects/epiphany/"
depends=('libgnomeprintui' 'libstdc++' 'dbus-gtk+2' 'atk' 'libxslt' 'gnome-desktop' \
                 'startup-notification' 'firefox=1.5.0.6' 'docbook-xsl')
makedepends=('pygtk' 'gtk-doc' 'perl-xml' 'python' 'gnome-python' 'iso-codes' 'gnome-doc-utils')
_F_gnome_schemas=('/etc/gconf/schemas/epiphany.schemas'
	'/etc/gconf/schemas/epiphany-lockdown.schemas'
	'/etc/gconf/schemas/epiphany-pango.schemas'
	'/etc/gconf/schemas/epiphany-fonts.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
Finclude gnome gnome-scriptlet
groups=('gnome-extra')
archs=('x86_64' 'i686')
sha1sums=('ac210cd4566c3905b89befa27de0d62509981d4b')
Fconfopts="$Fconfopts -with-gecko=firefox \
	--enable-python --enable-certificate-manager --enable-gtk-doc"

