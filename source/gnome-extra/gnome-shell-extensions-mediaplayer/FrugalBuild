# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=gnome-shell-extensions-mediaplayer
pkgver=20110526
pkgrel=2
pkgdesc="A mediaplayer indicator for the gnome-shell."
url="https://github.com/horazont/gnome-shell-extensions-mediaplayer"
depends=('gnome-shell>=3.0.2')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://ftp.frugalware.org/pub/other/people/devil505/snapshots/$pkgname"
source=(http://ftp.frugalware.org/pub/other/people/devil505/snapshots/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('f8a112f6502e71a092e5bdaf2ce74f88b489c7ab')

build(){
        Fcd
        Fmkdir usr/share/gnome-shell/extensions/
        Fcprel media\@sotecware.net usr/share/gnome-shell/extensions/
	Fsed "3.0.1" "3.0" $Fdestdir/usr/share/gnome-shell/extensions/media@sotecware.net/metadata.json
}

