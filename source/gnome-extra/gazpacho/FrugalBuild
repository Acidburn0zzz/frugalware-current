pkgname=gazpacho
pkgver=0.7.0
pkgrel=2
pkgdesc="Gazpacho is a fresh new GUI builder for the GTK+ toolkit designed to be ultra easy to use."
url="http://gazpacho.sicem.biz/"
license="LGPL 2.1"
depends=('kiwi' 'pygtk')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_mime="y"
Finclude gnome gnome-scriptlet
sha1sums=('0541fed2b45d8166dab47a43c37db724d2165a93')

build()
{
	Fbuild
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
	Fbuild_gnome_scriptlet
}
