# Last Modified: Mon, 16 Oct 2006 10:59:40 +0200
# Compiling Time: 0.02 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=gazpacho
pkgver=0.6.6
pkgrel=3
pkgdesc="Gazpacho is a fresh new GUI builder for the GTK+ toolkit designed to be ultra easy to use."
url="http://gazpacho.sicem.biz/"
depends=('kiwi' 'pygtk')
up2date="lynx -dump $url/downloads | grep 'Linux tarball' | cut -d ' ' -f 10"
source=(http://ftp.acc.umu.se/pub/GNOME/sources/$pkgname/`echo $pkgver | cut -d . -f 1,2`/$pkgname-$pkgver.tar.bz2)
sha1sums=('5aa05db27220129ce7aa98ebb6bd83b647037dd6')
license="LGPL 2.1"
groups=('gnome-extra')
install=$pkgname.install
archs=('i686' 'x86_64')

build()
{
	Fbuild
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
	Fln $pkgname-$pkgver /usr/share/doc/$pkgname
}

# optimization OK - noarch
