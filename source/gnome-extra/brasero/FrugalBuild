pkgname=brasero
pkgver=0.4.4
pkgrel=2
pkgdesc="A CD/DVD Burning application for the Gnome desktop"
url="http://bonfire.sourceforge.net/"
makedepends=('intltool')
depends=('gnome-vfs' 'libgnome' 'libgnomeui' 'cdrtools' 'dvd+rw-tools' 'nautilus-cd-burner' 'gstreamer' \
	'gst-plugins-base' 'hal' 'libxml2' 'totem' 'perl-xml' 'libnotify' 'dbus-glib>=0.71-2' 'libbeagle' 'gst-plugins-good')
groups=('gnome-extra')
conflicts=('bonfire')
replaces=('bonfire')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="bonfire"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=156415 | grep -m1 brasero | sed 's/.*ro-\(.*\) Se.*/\1/'"
_F_gnome_schemas=('/etc/gconf/schemas/brasero.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="n"
Finclude gnome-scriptlet
options=('force')
sha1sums=('5242932b65f9ca5d8044b558cec94369cad3b064')

build()
{
	Fcd
	Fautoreconf
	Fbuild_slice_scrollkeeper
	Fbuild --enable-search --enable-playlist --enable-preview \
          --enable-inotify --enable-libnotify --disable-schemas-install --enable-caches=no
  	Fbuild_gnome_scriptlet
}

