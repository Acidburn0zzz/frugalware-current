pkgname=shotwell
pkgver=0.7.0
pkgrel=2
pkgdesc="A digital photo organizer designed for the GNOME desktop environment"
url="http://yorba.org/shotwell/"
depends=('libgee' 'gconf>=2.28.0' 'libgphoto2' 'unique' 'webkit' 'atk' 'libxslt' 'libxt' 'libice' 'libgcc' 'libxinerama' 'libxi' 'libxrandr' 'libxcursor' 'sqlite3' 'libsoup' 'libgudev' 'libgexiv2>=0.2.0' 'libraw')
makedepends=('vala' 'intltool')
options=('scriptlet')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude gnome-scriptlet
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/install/"
source=(http://yorba.org/download/shotwell/0.7/$pkgname-$pkgver.tar.bz2)
sha1sums=('14ffb9f911e6669002e1e44e537edcfc454b9419')

build() {
	Fbuild
	Frm usr/share/icons/hicolor/icon-theme.cache
	Fbuild_gnome_scriptlet
}

# optimization OK
