pkgname=gnome-paint
pkgver=0.3
pkgrel=1
pkgdesc="gnome-paint is a simple, easy to use paint program for GNOME."
url="http://www.gnome.org"
depends=('gtk+2>=2.20.0-2')
makedepends=('intltool')
options=('scriptlet')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude googlecode gnome-scriptlet
sha1sums=('3c3aa868e148afc3f48e217293281b686d38ee53')

build() {
	Fcd
	Fsed "GTK_WIDGET_STATE" "gtk_widget_get_state" src/*.c
	Fbuild
	Fbuild_gnome_scriptlet
}

# optimization OK
