	'totem-pl-parser' 'libtracker')
makedepends=('gnome-doc-utils>=0.10.3' 'gobject-introspection' 'intltool' 'itstool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome
sha1sums=('6814d79c026499c8f92ed87c9b3af4ba0ee563fc')
Fconfopts+=" \
		--disable-fakemetadata \
		--enable-filesystem \
		--enable-jamendo \
		--enable-lastfm-albumart \
		--enable-upnp \
		--enable-youtube \
		--enable-flickr \
		--enable-podcasts \
		--enable-bookmarks \
		--disable-shoutcast \
		--enable-apple-trailers \
		--enable-metadata-store \
		--enable-vimeo \
		--enable-gravatar \
		--enable-tracker \
		--enable-localmetadata"

build() {
	Fbuild
	Frm usr/bin/test
