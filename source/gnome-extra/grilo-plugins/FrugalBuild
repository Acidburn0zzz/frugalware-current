	'totem-pl-parser' 'libtracker' 'json-glib')
makedepends=('intltool' 'gnome-doc-utils>=0.10.3' 'gobject-introspection')
groups=('gnome-extra')
archs=('i686' 'x86_64')
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome
sha1sums=('ad09155733539d906c0dc6d0180467d3484a2b3f')
Fconfopts+=" \
		--disable-fakemetadata \
		--enable-filesystem \
		--enable-jamendo \
		--enable-lastfm-albumart \
		--enable-upnp \
		--enable-youtube \
		--enable-flickr \
		--enable-podcasts \
		--enable-bookmarks \
		--disable-shoutcast \
		--enable-apple-trailers \
		--enable-metadata-store \
		--enable-vimeo \
		--enable-gravatar \
		--disable-tracker \
		--enable-localmetadata"

build() {
	Fbuild
	Frm usr/bin/test
