pkgname=gtk+2-engines-murrine
pkgver=0.31
pkgrel=1
pkgdesc="Murrine is a fast and modern looking GTK+2 engine."
url="http://www.gnome-look.org/content/show.php?content=42755"
rodepends=('zenity')
depends=('gtk+2' 'gtk+2-engines' 'gnome-icon-theme')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep -m1 'Version:' | sed 's/.*://' | tr -d [:blank:]"
source=(http://cimi.netsons.org/media/download_gallery/murrine/murrine-$pkgver.tar.bz2 \
	'http://cimi.netsons.org/media/download_gallery/MurrineThemePack.tar.bz2' \
	'http://www.gnome-look.org/content/files/43590-Murrine-Elegant.tar.gz' \
	'http://www.gnome-look.org/content/files/45896-Murrina-GT4.tar.bz2' \
	'http://www.kernow-webhosting.com/~bvc/theme/mcity/Murrine.tar.gz' \
	'http://www.kernow-webhosting.com/~bvc/theme/gtk/murrine/Murrina-Aqua.tar.gz' \
	'http://www.kernow-webhosting.com/~bvc/theme/gtk/murrine/Murrina-Blu.tar.gz' \
	'http://www.kernow-webhosting.com/~bvc/theme/gtk/murrine/Murrina-Graphite.tar.gz' \
	'http://www.kernow-webhosting.com/~bvc/theme/gtk/murrine/Murrina-Green.tar.gz' \
	'http://www.kernow-webhosting.com/~bvc/theme/gtk/murrine/Murrina-Olive.tar.gz' \
	'http://www.kernow-webhosting.com/~bvc/theme/gtk/murrine/Murrina-Pink.tar.gz' \
	'http://www.kernow-webhosting.com/~bvc/theme/gtk/murrine/Murrina-Purple.tar.gz' \
	'http://cimi.netsons.org/media/download_gallery/murrine/murrine-configurator-0.4.1.tar.bz2' \
	'http://cimi.netsons.org/media/download_gallery/MurrinaFancyCandy.tar.bz2' \
	'http://cimi.netsons.org/media/download_gallery/MurrinaAquaIsh.tar.bz2' \
	'http://cimi.netsons.org/media/download_gallery/MurrinaGilouche.tar.bz2' \
	'http://cimi.netsons.org/media/download_gallery/MurrinaLoveGray.tar.bz2' \
	'http://priyank.one09.net/files/Murrina-GT4-Rounded.tar.bz2')
sha1sums=('b6e80efb0552b58ccfef5b57f4cd3fbb51635733' \
	  'e58a62b7f2cbfc62f0945cf03f42e46768ca22e8' \
	  'e52ed0d4c4c9fcc93331b7f840f41b77751c8a0e' \
	  '222ccbf9fb9c0d78156d202929ba7dac1dfd68cd' \
	  '6669a8cf02aac2e5109651d0b83faf89b052f0ef' \
	  'c425be049505106fd6b959cdf0b44201821182f5' \
	  '9e45ba0211414a4a5b003c05960a3a17d9cf1e12' \
	  '15d0c2ea07f037eb150fb5464bf86466ea8ffb59' \
	  'db3a23a01ec2c01206a6112a5496db08382c452b' \
	  '9eb45f450599f3e4975c1f6e550b28a9bc497ac3' \
	  '8151807164e45ce3c6ea82005d05c15f8e9b5f33' \
	  '38f7cc7442a7ba84a8a642a096ed25144ade19e7' \
	  'b24f19c9b1c2fc1ce64cc0079eddd816f6c2b3d7' \
	  '6b957cdc19c113fa608ab83b690d72b77e0c1033' \
	  'bfa6099413b7de1c734b985d40713b997df7060b' \
	  '0b4717522a911511f2f75e599da929297acfe174' \
	  '99b9d017384f94d160dd69a9ae5aa061d1c5eca3' \
	  '08d564f5d28ac1b72f578c7ff59170c35ec4fac1')
Fconfopts="${Fconfopts[@]} --enable-animation"
_F_cd_path="murrine-$pkgver"

build()
{
	Fbuild

	# Install themes
	Fmkdir /usr/share/themes
	Fcpr MurrinaCandy /usr/share/themes
	Fcpr MurrinaCappuccino /usr/share/themes
	Fcpr MurrinaEalm /usr/share/themes
	Fcpr Murrina-GT4 /usr/share/themes
	Fcpr Murrina-GT4-Rounded /usr/share/themes
	Fcpr MurrinaNeoGraphite /usr/share/themes
	Fcpr Murrine-Elegant /usr/share/themes
	Fcpr Murrina-Aqua /usr/share/themes
	Fcpr Murrina-Blu /usr/share/themes
	Fcpr Murrina-Graphite /usr/share/themes
	Fcpr Murrina-Green /usr/share/themes
	Fcpr Murrina-Olive /usr/share/themes
	Fcpr Murrina-Pink /usr/share/themes
	Fcpr Murrina-Purple /usr/share/themes
	Fcpr MurrinaAquaIsh /usr/share/themes
	Fcpr MurrinaLoveGray /usr/share/themes
	Fcpr MurrinaGilouche /usr/share/themes
	Fcpr MurrinaFancyCandy /usr/share/themes

	# Replace "squaredstyle" by "roundness" in all murrine themes
	files=`find $Fdestdir/usr/share/themes -name gtkrc -type f | xargs grep "squaredstyle" | cut -f1 -d':'`
	for i in "$files"
	do
		Fsed 'squaredstyle' 'roundness' "$i"
	done;

	# Metacity theme
	Fcpr Murrine /usr/share/themes
	
	# Murrine Configurator
	Fmkdir /usr/{bin,share/pixmaps,share/applications}
	cd $Fsrcdir/murrine-configurator-0.4.1/files
	Fexerel murrine-configurator /usr/bin/
	Ficonrel murrine-configurator.png
	Ffilerel murrine-configurator.desktop /usr/share/applications/
}

# optimization OK
