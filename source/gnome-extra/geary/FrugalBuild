options+=('asneeded')

pkgname=geary
pkgver=0.4.0
pkgrel=1
pkgdesc="A new lightweight, easy-to-use, feature-rich email client"
url="http://redmine.yorba.org/projects/geary"
depends=('libgee8' 'unique' 'sqlheavy' 'gmime2' 'libgnome-keyring' 'webkit-gtk3' \
         'libnotify' 'libcanberra' 'desktop-file-utils')
makedepends=('vala' 'vala-docs' 'intltool' 'gobject-introspection')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_gnome_glib="y"
Finclude cmake gnome-scriptlet
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://yorba.org/download/geary/stable/"
source=(http://yorba.org/download/geary/stable/$pkgname-$pkgver.tar.xz)
sha1sums=('c8de21898c007188ea3d6b033e9bc5e53668adc9')
replaces=('postler')

build()	{
	Fcd
	Fsed "sqlheavy-0.1" "sqlheavy-0.2" src/CMakeLists.txt
	CMake_build
	Fbuild_gnome_scriptlet
}

# optimization OK
