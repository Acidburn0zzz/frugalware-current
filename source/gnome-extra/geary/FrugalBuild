options+=('asneeded')

pkgname=geary
pkgver=0.6.0
pkgrel=1
pkgdesc="A new lightweight, easy-to-use, feature-rich email client"
depends=('libgee8' 'unique' 'sqlheavy' 'gmime2' 'libgnome-keyring' 'webkit-gtk3' \
         'libnotify' 'libcanberra' 'desktop-file-utils')
makedepends=('vala' 'vala-docs' 'intltool' 'gobject-introspection' 'gnome-doc-utils')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_gnome_glib="y"
_F_gnome_ext=".tar.xz"
Finclude cmake gnome gnome-scriptlet
groups=('gnome-extra')
archs=('i686' 'x86_64')
sha1sums=('000177f972ee4cd769408ac1c37baedea7d473ce')


build()	{
	Fcd
	Fsed "sqlheavy-0.1" "sqlheavy-0.2" src/CMakeLists.txt
	CMake_build
	Fbuild_gnome_scriptlet
}

# optimization OK
