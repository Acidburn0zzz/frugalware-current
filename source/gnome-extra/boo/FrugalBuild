pkgname=boo
pkgver=0.7.6.2237
pkgrel=1
pkgdesc="A wrist friendly language for the CLI"
url="http://www.mono-project.com/"
depends=('mono' 'gtksourceview' 'shared-mime-info')
makedepends=('nant')
groups=('gnome-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_gnome_mime=y
Finclude gnome-scriptlet mono
up2date="lynx -dump http://www.go-mono.com/sources-latest/|grep -m1 'boo-'|sed 's/.*boo-\(.*\)-.*/\1/'"
source=(http://www.go-mono.com/sources/$pkgname/$pkgname-$pkgver-src.tar.bz2)
sha1sums=('9a498706373153c7beaa98dee466a9055fd7e95d')

build() {
	Fmonoexport
	Fcd
	Fnant
	Fnant install
	Fmonocleanup
	Fbuild_gnome_scriptlet
}
