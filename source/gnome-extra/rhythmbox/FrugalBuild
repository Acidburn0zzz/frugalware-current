pkgname=rhythmbox
pkgver=0.9.5
pkgrel=2
pkgdesc="A music management application for GNOME"
url="http://www.rhythmbox.org/"
up2date="lynx -dump $url/news.html|grep 'Rhythmbox [0-9]'|sed -n 's/.*Rhythmbox \([0-9\.]*\).*/\1/;1p'"
depends=('libgnomeui' 'gst-plugins' 'gst-plugins-base' 'nautilus-cd-burner' \
	'scrollkeeper' 'desktop-file-utils' 'gstreamer' 'totem')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome-extra')
archs=('i686' 'x86_64')
source=(http://ftp.gnome.org/pub/GNOME/sources/rhythmbox/0.9/$pkgname-$pkgver.tar.bz2)
_F_gnome_schemas=('/etc/gconf/schemas/rhythmbox.schemas')
_F_gnome_scrollkeeper="y"
Finclude gnome-scriptlet
unset MAKEFLAGS
export GSTREAMER_0_10=1

# optimization OK

sha1sums=('94b35f20c9fa45b105d4a068d83e150f4380e921')
