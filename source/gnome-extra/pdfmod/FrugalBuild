pkgname=pdfmod
pkgver=0.6
pkgrel=1
pkgdesc="Doing simple manipulations to PDF files"
url="http://live.gnome.org/PdfMod"
depends=('mono' 'gnome-sharp' 'gnome-doc-utils' 'hyena')
makedepends=('intltool' 'pkgconfig')
_F_gnome_desktop="y"
options=('scriptlet')
Finclude mono gnome-scriptlet gnome
groups=('gnome-extra')
archs=('x86_64' 'i686' 'ppc')
sha1sums=('b0028aec2dcfa15e615714580b6e2a074e2899ac')
build()
{
  	Fcd
	Fmonoexport
  	Fbuild
	Fmonocleanup
	Fbuild_gnome_scriptlet
}
