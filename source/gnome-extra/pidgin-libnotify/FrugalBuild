# Compiling Time: 0.13 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=pidgin-libnotify
pkgver=0.12
pkgrel=1
pkgdesc="A guifications like notification plugin for Pidgin."
_F_sourceforge_name="${pkgname/pidgin/gaim}"
_F_sourceforge_broken_up2date="1"
Finclude sourceforge
url="http://gaim-libnotify.sourceforge.net/"
makedepends=('intltool')
depends=('pidgin>=2.0.0-2' 'libnotify' 'notification-daemon')
groups=('gnome-extra')
archs=('i686')
source=(${source[@]} pidgin.diff)
_F_cd_path="${pkgname/pidgin/gaim}-$pkgver"
sha1sums=('c20d82ff8fc69a6fa2a67bdc4c6b503c8b2c9ee6'\
          '83c83ef429ae188ef224d5248ed59510a9cf203e')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fconf --disable-deprecated
	make || Fdie
	Fmakeinstall
}

# optimization OK
