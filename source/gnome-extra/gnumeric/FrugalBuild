# Compiling time: 2.09 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gnumeric
pkgver=1.7.2
pkgrel=1
pkgdesc="The GNOME spreadsheet"
url="http://www.gnome.org/projects/gnumeric/"
depends=('libgnomedb' 'libgda' 'libgsf-gnome' 'desktop-file-utils' 'goffice>=0.3.2')
makedepends=('intltool' 'pygtk')
groups=('gnome-extra')
archs=('i686' 'x86_64')
license=('GPL-2')
_F_gnome_devel="n"
_F_gnome_schemas=('/etc/gconf/schemas/gnumeric-dialogs.schemas'
	'/etc/gconf/schemas/gnumeric-general.schemas'
	'/etc/gconf/schemas/gnumeric-plugins.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
Finclude gnome gnome-scriptlet
source=(ftp://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.?}/$pkgname-$pkgver.tar.bz2)
sha1sums=('8817f67986665f868d62b77c4a7aa07d129a5495')

build() {
	Fpatchall
	Fbuild_slice_scrollkeeper
	Fmake --enable-ssindex --disable-schemas-install --disable-scrollkeeper
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fbuild_gnome_scriptlet
	Frm /usr/share/mc/
}

# optimization OK
