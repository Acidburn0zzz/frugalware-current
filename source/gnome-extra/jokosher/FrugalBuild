# Compiling Time: 0.00 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=jokosher
pkgver=0.1
pkgrel=1
pkgdesc="Jokosher is a simple yet powerful multi-track audio studio"
url="http://www.jokosher.org"
depends=('gnonlin' 'gst-plugins-ugly-mad' 'gst-plugins-ugly-lame' 'gst-plugins-base-oil' 'pyalsaaudio' 'gst-python' \
	 'dbus-python' 'pygtk')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.jokosher.org/downloads/source | Flasttar"
_F_gnome_mime=y
_F_gnome_desktop=y
Finclude gnome-scriptlet
source=(http://www.jokosher.org/downloads/source/$pkgname-$pkgver.tar.gz \
	01-alter-desktop-file.patch jokosher.xml jokosher)
sha1sums=('26a84be84183400badf54173259badb8222904b1' \
	  '70a6ab4c1ef7baefc023abdc14e6f4d627298764' \
	  '654dd38db9f4dac716a192cf07e54819be794d79' \
	  '5dc030c4d250b4cd67365edce34bb89e80daf3e2')

build() {
	Fcd
	Fpatchall
	Fmkdir /usr/bin
	Fexerel ../jokosher /usr/bin/jokosher
	Fmkdir /usr/share/mime/packages
	Ffile jokosher.xml /usr/share/mime/packages/jokosher.xml
	Fmkdir /usr/share/applications
	Ffile $pkgname-$pkgver/jokosher.desktop /usr/share/applications/jokosher.desktop
	Fmkdir /usr/share/jokosher
	for file in *.py images Instruments doc *.png *.glade; do
		Fcpr $pkgname-$pkgver/$file /usr/share/jokosher
	done
	Fbuild_gnome_scriptlet
}
