# Compiling Time: 0.01 SBU
# Maintainer: jercel <jercel16@gmail.com>

pkgname=jokosher
pkgver=0.11.3
pkgrel=2
pkgdesc="Jokosher is a simple yet powerful multi-track audio studio"
url="http://www.jokosher.org"
depends=('gnonlin>=0.10.11' 'gst-plugins-ugly-mad' 'gst-plugins-ugly-lame' 'gst-plugins-base-oil' 'pyalsaaudio' 'gst-python' \
	 'dbus-python' 'pygtk' 'setuptools' 'shared-mime-info' 'desktop-file-utils')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/download/"
_F_gnome_mime=y
_F_gnome_desktop=y
_F_gnome_scrollkeeper=y
_F_gnome_iconcache=y
Finclude gnome-scriptlet
source=(http://archive.ubuntu.com/ubuntu/pool/universe/j/$pkgname/${pkgname}_${pkgver}.orig.tar.gz)
sha1sums=('955b560de834a019797a2be924fbfc36d10a1c5e')

build()
{
	Fcd
	Fbuild_slice_scrollkeeper
	Fbuild
	Fsed "AudioVideoEditing;GTK;Recorder" "GNOME;GTK;Application;AudioVideo;" $Fdestdir/usr/share/applications/jokosher.desktop
	Fbuild_gnome_scriptlet
}
