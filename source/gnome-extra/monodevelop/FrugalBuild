pkgname=monodevelop
pkgver=0.12
pkgrel=1
pkgdesc="A project to port SharpDevelop to Gtk#"
url="http://www.mono-project.com/"
depends=('gecko-sharp' 'gtksourceview-sharp' 'shared-mime-info' 'mono-tools' 'firefox' 'ikvm' 'boo' 'gnome-sharp')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.go-mono.com/sources-latest/'|grep monodevelop-[0-9\.]*.tar.gz | sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.go-mono.com/sources/$pkgname/$pkgname-$pkgver.tar.gz \
	boo_mimetype.patch \
	firefox.patch \
	libstetic-dllmap.patch \
	remove_gtk-sharp-1.0_support.patch \
	autogen.sh
	update_templates_for_gtk_sharp_2.8.x.patch)
options=('scriptlet' 'force')
_F_gnome_desktop=y
_F_gnome_mime=y
Finclude gnome-scriptlet mono
sha1sums=('904b7b355297ecb1a4bac75003c8265bfd6aa141' \
	  '719b456cee8e5e2b4cf3778915464c191f246d98' \
	  'ce1df8e62734bd8cbdeee6c180e03df4cbc9fe65' \
	  '769451a6399a13eb5164b7c10bee808c87dc0706' \
	  '1d2aa608a1039fb275f0f35abb461d3213b1f775' \
	  '7e138cb136265162cdaf86520c4781b6ff2b9192'
	  'db0fe450ef76f83853179bd0fd557f408175c3ee')
Fconfopts="$Fconfopts --enable-java --enable-boo --enable-nunit --enable-versioncontrol"

build() {
	Fmonoexport
	Fcd
	Fpatchall
	NOCONFIGURE=y ../autogen.sh
	Fmake
	Fmakeinstall
	Fmonocleanup
	Fbuild_gnome_scriptlet
}
