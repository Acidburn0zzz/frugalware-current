#!/bin/bash

# builds all firefox localization packages

build() {
  LC_ALL=
  LANG=
  pkg=$1
  shift 1
  cd $pkg
echo "**************"
    pwd
echo "**************"
  	makepkg -c -f $* || exit 1
	# pacman -U -f *fpm $*
	# movepkg
  cd ..
}

for i in firefox-*
do
	[ -e $i/*fpm ] || build $i $*
done
