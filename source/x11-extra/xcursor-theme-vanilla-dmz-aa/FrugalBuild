pkgname=xcursor-theme-vanilla-dmz-aa
pkgver=0.4
pkgrel=1
pkgdesc="Vanilla DMZ AA cursor theme"
url="http://jimmac.musichall.cz/themes.php?skin=7"
depends=('libx11' 'libxcursor')
groups=('x11-extra')
archs=('i686' 'x86_64')
_F_archive_name="vanilla-dmz-aa"
up2date="Flasttar $url"
source=(http://jimmac.musichall.cz/zip/$_F_archive_name-$pkgver.tar.bz2)
sha1sums=('7ed0b4b5c70c16866ad79b1daf9edafc35a82ef0')

build() {
  Fmkdir usr/share/icons/Vanilla-DMZ-AA
  Fcp Vanilla-DMZ-AA/cursors usr/share/icons/Vanilla-DMZ-AA/cursors
  Finstall 644 Vanilla-DMZ-AA/index.theme usr/share/icons/Vanilla-DMZ-AA/index.theme
}
