# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=tint
pkgver=0.5.1
pkgrel=1
pkgdesc="Tint is a simple panel/taskbar."
url="http://code.google.com/p/tint2"
depends=('pango' 'libxau' 'libxdmcp' 'imlib2' 'libxml2')
groups=('x11-extra')
options=('scriptlet')
archs=('i686' 'x86_64')
up2date="Flasttar $url/downloads/list"
source=(http://${pkgname}2.googlecode.com/files/$pkgname-$pkgver.tar.gz)
sha1sums=('1a0dd71f8518c4d08a5f73af47f6627edee882f9')
_F_cd_path="$pkgname/src"

build()
{
	Fbuild
	# include the sample tintrcs for reference
	Ffilerel ../tintrc_sample[0-4] /etc/xdg/$pkgname
}

# optimization OK
