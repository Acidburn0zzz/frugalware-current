pkgname=redhat-artwork
pkgver=0.243_3
pkgrel=1
pkgdesc="Icons, desktop backgrounds, and themes from Red Hat and Fedora."
url="http://fedora.redhat.com/projects/artwork/"
makedepends=('perl-xml' 'icon-slicer' 'cpio' 'rpm' 'gtk+' 'gtk+2' 'kdebase' 'qt' 'kdelibs' 'xcursorgen')
depends=('gdk-pixbuf')
groups=('x11-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
source=(http://download.fedora.redhat.com/pub/fedora/linux/core/development/source/SRPMS/$pkgname-`echo $pkgver | tr "_" "-"`.fc6.src.rpm)
up2date='lynx -dump "http://download.fedora.redhat.com/pub/fedora/linux/core/development/source/SRPMS/" | grep "redhat-artwork-.*.fc6.src.rpm" | head -n 1 | sed "s/.*redhat-artwork-\(.*\).fc6.src.rpm.*/\1/" | tr "-" "_"'
sha1sums=('e7ddcef6fa1c69124f70a4245e9f158a691a5a90')

build() {
	. /etc/profile.d/pkgconfig.sh
	rpm2cpio $pkgname-`echo $pkgver | tr "_" "-"`.fc6.src.rpm | cpio -i
	tar -xvzf $pkgname-`echo $pkgver | sed "s/_.*//"`.tar.gz
	Fcd $pkgname-`echo $pkgver | sed "s/_.*//"`
	Fsed ' $(datadir)' ' $(DESTDIR)$(datadir)' art/cursor/{L,}Bluecurve{,-inverse}/Makefile.in art/icon/{,Bluecurve/sheets/}Makefile.in
	Fsed 'GtkStyle' '4' art/qt/Bluecurve/bluecurve.cpp
	Fsed 'qt-.\..' 'qt' art/qt/qtrc
	Fbuild
	Fmv "/usr/lib/qt-?.?" /usr/lib/qt
}

# optimization OK
