# Compiling Time: ~0.03 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=fbpanel
pkgver=4.3
pkgrel=1
pkgdesc="fbpanel is a lightweight, NETWM compliant desktop panel."
_F_sourceforge_ext=".tgz"
Finclude sourceforge
url="http://fbpanel.sourceforge.net/"
license="GPL"
up2date="lynx -dump $url | grep $pkgname-[0-9.]. | cut -d '-' -f 2"
groups=('x11-extra')
archs=('i686' 'x86_64')
depends=('gtk+2' 'libxpm')
sha1sums=('0479b407cf3aad87c4c0de4188475797d97492d4')

build()
{
	Fmake
	for i in Makefile man/Makefile config/Makefile systray/Makefile plugins/Makefile ; do
		Fsed '$(PREFIX)' "$Fdestdir/\$(PREFIX)" $i
	done
	Fmakeinstall
}
