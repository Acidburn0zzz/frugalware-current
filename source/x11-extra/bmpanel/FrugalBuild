# Compiling Time: 0.02 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=bmpanel
pkgver=0.9.20
pkgrel=1
pkgdesc="A themeable reincarnation of fspanel"
url="http://nsf.110mb.com/bmpanel/"
depends=('libev' 'imlib2' 'fontconfig' 'zlib' 'libxrender' 'libxcomposite')
makedepends=('scons')
groups=('x11-extra')
archs=('i686')
up2date="Flasttar $url"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('6f51a4b0b5c2c3909823d228631c23c90243868f')

build()
{
	# adjusting pathes for libev
	Fsed 'ev.h' 'libev/ev.h' {SConstruct,src/bmpanel.c}
	Fsed '-O2 -march=native' "$CFLAGS" SConstruct
	# end of corrections
	scons prefix=/usr build || Fdie
	scons prefix=$Fdestdir/usr install || Fdie
}

# optimization OK
