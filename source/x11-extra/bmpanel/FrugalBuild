pkgname=bmpanel
pkgver=0.9.27
pkgrel=5
pkgdesc="A themeable reincarnation of fspanel"
url="http://nsf.110mb.com/bmpanel/"
rodepends=('dejavu-ttf')
depends=('imlib2>=1.4.3-2' 'libxrender>=0.9.4-3' 'libxcomposite>=0.4.0-2'
        'fontconfig' 'zlib' 'glibc>=2.8')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('c048fbea3eb4f3f70f1086e23c338cdee2dec0b6')

build()
{
	Fsed '-Wall' "-Wall $CFLAGS" configure
	Fbuild
}

# optimization OK
