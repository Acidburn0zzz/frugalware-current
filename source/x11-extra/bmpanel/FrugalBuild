# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=bmpanel
pkgver=0.9.26
pkgrel=1
pkgdesc="A themeable reincarnation of fspanel"
url="http://nsf.110mb.com/bmpanel/"
depends=('imlib2' 'libxrender' 'libxcomposite' 'fontconfig' 'zlib' 'libevent')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('6b18d2f2681b707258c1053f7c6e7ea2835eee43')

build()
{
	Fsed '-Wall' "-Wall $CFLAGS" configure
	Fbuild --with-event
}

# optimization OK
