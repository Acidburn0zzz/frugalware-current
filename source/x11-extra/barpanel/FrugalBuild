# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=barpanel
pkgver=0.4.0
pkgrel=3
pkgdesc="A continuation of foopanel."
url="http://www.ossproject.org/projects/barpanel"
rodepends=('pygtk')
makedepends=('python')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/download"
source=(http://www.ossproject.org/files/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('493ecb3a0aba30c0594d13ecbed8accfb7ead0df')
subpkgs=("$pkgname-menu" "$pkgname-battery" "$pkgname-libwnck")
subdescs=("Menu plugin for $pkgname." "Battery monitor plugin for $pkgname" "libwnck based plugins for $pkgname.")
subgroups=("x11-extra" "x11-extra" "x11-extra")
subrodepends=("pyxdg" "dbus-python hal" "gnome-python-desktop-wnck")
subarchs=("i686 x86_64" "i686 x86_64" "i686 x86_64")

build()
{
	Fbuild
	Fsplit $pkgname-menu /usr/lib/python2.5/site-packages/$pkgname/plugins/menu.py
	Fsplit $pkgname-menu /usr/lib/python2.5/site-packages/$pkgname/plugins/menu.pyc
	Fsplit $pkgname-battery /usr/lib/python2.5/site-packages/$pkgname/plugins/battery.py
	Fsplit $pkgname-battery /usr/lib/python2.5/site-packages/$pkgname/plugins/battery.pyc
	Fsplit $pkgname-libwnck /usr/lib/python2.5/site-packages/$pkgname/plugins/pager.py
	Fsplit $pkgname-libwnck /usr/lib/python2.5/site-packages/$pkgname/plugins/pager.pyc
	Fsplit $pkgname-libwnck /usr/lib/python2.5/site-packages/$pkgname/plugins/windowlist.py
	Fsplit $pkgname-libwnck /usr/lib/python2.5/site-packages/$pkgname/plugins/windowlist.pyc
	Fsplit $pkgname-libwnck /usr/lib/python2.5/site-packages/$pkgname/plugins/windowmenu.py
	Fsplit $pkgname-libwnck /usr/lib/python2.5/site-packages/$pkgname/plugins/windowmenu.pyc
}
