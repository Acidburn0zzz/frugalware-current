pkgname=emerald
pkgrel=1
makedepends=('intltool' 'perl-xml')
groups=('x11-extra')
archs=('i686' 'x86_64')
_F_gnome_mime=y
_F_gnome_desktop=y
sha1sums=('85bad4cb0c4e8904db0151c04b2dbc4d797062eb')
Finclude gnome-scriptlet beryl
depends=("beryl=$pkgver" 'gtk+2' 'beryl-dbus' 'desktop-file-utils' 'shared-mime-info')
Fconfopts="$Fconfopts --disable-mime-update"

build() {
	Fbuild_beryl
	Fbuild_gnome_scriptlet
}

