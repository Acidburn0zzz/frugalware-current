pkgname=emerald
pkgrel=2
makedepends=('intltool' 'perl-xml')
groups=('x11-extra')
archs=('i686' 'x86_64')
_F_gnome_mime=y
_F_gnome_desktop=y
Finclude gnome-scriptlet beryl
conflicts=('cgwd')
provides=('cgwd')
replaces=('cgwd')
depends=("beryl=$pkgver" 'gtk+2' 'beryl-dbus' 'beryl-plugins' 'desktop-file-utils' 'shared-mime-info')
Fconfopts="$Fconfopts --disable-mime-update"

build() {
	Fbuild_beryl
	Fbuild_gnome_scriptlet
}

# optimization OK
