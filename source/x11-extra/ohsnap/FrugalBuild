# Compiling Time: 0.01 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=ohsnap
pkgver=1.5
pkgrel=1
pkgdesc="Monospaced font 7x14 based on artwiz-snap and a version with status icons."
depends=('fontconfig' 'mkfontscale' 'mkfontdir')
groups=('x11-extra')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="osnapfont"
Finclude sourceforge
sha1sums=('d842e2faba89da24c0f980cffc6604da0196036a')

build() {
	Fcd
	Fmkdir /usr/share/fonts/X11/75dpi/
	Ffilerel * /usr/share/fonts/X11/75dpi || Fdie
}
