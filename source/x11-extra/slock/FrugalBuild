# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=slock
pkgver=0.8
pkgrel=1
pkgdesc="a simple screen locker for your X session"
url="http://www.suckless.org/programs/slock.html"
depends=('libxext')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=(http://code.suckless.org/dl/tools/$pkgname-$pkgver.tar.gz)
sha1sums=('2e62e71ea2f1eff564272bbe3099438cee6753e2')

build()
{
	Fsed '/usr/local' '/usr' config.mk
	make CC="gcc $CFLAGS" || Fdie
	Fmakeinstall
}

# optimization OK
