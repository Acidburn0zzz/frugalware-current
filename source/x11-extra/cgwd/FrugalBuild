pkgname=cgwd
pkgver=20060815
pkgrel=3
pkgdesc="A window decorator for compiz"
url="http://en.opensuse.org/Compiz"
depends=('xgl' 'mesa-cvs' 'compiz-cvs' 'glew' 'libxevie' 'libxcomposite' \
	'libpng' 'libxdamage' 'libxrandr' 'startup-notification' 'gnome-desktop' \
	'control-center' 'libsvg-cairo')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="$pkgver"
source=(http://frugalware.org/~priyank/cvs/$pkgname-$pkgver.tar.bz2)
sha1sums=('9f7e98aab547a1dfdf03e279082a75e6819465ef')
options=('NOSTRIP')
_F_gnome_mime="y"
Finclude gnome-scriptlet

build() {
	Fcd
	Fsed '$srcdir/configure' '#./configure' autogen.sh
	./autogen.sh
	Fmake
	Fmakeinstall
	Fbuild_gnome_scriptlet
}

# optimization OK
