pkgname=xf86-input-wacom
pkgver=0.10.3
pkgrel=1
pkgdesc="Drivers, libraries, and doc for configuring and running Wacom tablets."
url="http://cgit.freedesktop.org/~whot/$pkgname/"
up2date="Flasttar $url"
depends=('xorg-server>=1.6.1' 'libxi>=1.1.3')
makedepends=('inputproto' 'randrproto' 'util-macros')
rodepends=('udev')
provides=('linuxwacom')
replaces=('linuxwacom')
conflicts=('linuxwacom')
groups=('x11-extra')
archs=('i686' 'x86_64' 'ppc')
source=($url/snapshot/$pkgname-$pkgver.tar.bz2 \
	check_driver{,.1} \
	60-wacom.rules )
sha1sums=('ffffcf72b3de1f9a6f83edf66263e5875e8322c1' \
          '12ae37807a03f36be2c5cc47e444475677b41693' \
          '7adf948f2d6f29635e80f4cc336799b7962d2a9a' \
          'c8063c86189a7b3459a33b3c5ccfca36fa5439fd')

build()
{
	Fcd
	Fpatchall
	./autogen.sh
	Fbuild
	Fexe /lib/udev/check_driver
	Fman check_driver.1
	Ffile /lib/udev/rules.d/60-wacom.rules
}

# optimization OK
