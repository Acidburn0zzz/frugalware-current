# Compiling Time: 0.02 SBU
# Maintainer: PacMiam <PacMiam@gmx.fr>

pkgname=i3status
pkgver=2.5.1
pkgrel=2
pkgdesc="Generates status bar to use with dzen2 or xmobar"
url="http://i3.zekjur.net/i3status/"
depends=('wireless_tools' 'confuse' 'alsa-lib' 'yajl')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://i3wm.org/i3status/ | Flasttar"
source=(http://i3wm.org/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('affab82d697c52c46db7250f759cac12f78df061')

build() {
	Fcd
	Fbuild DESTDIR=/usr
	Finstallrel 644 LICENSE $Fdestdir/usr/share/$pkgname/LICENSE
}
