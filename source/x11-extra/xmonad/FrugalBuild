pkgname=xmonad
pkgver=0.8
pkgrel=1
pkgdesc="A lightweight X11 tiled window manager written in Haskell"
groups=('x11-extra')
archs=('i686' 'x86_64')
url="http://xmonad.org/"
depends=('ghc' 'gmp' 'haskell-x11')
sha1sums=('26eb5e80ba83da43cec963435daec6b925e3b1a7')
Finclude haskell

build()
{
	Fcd
	Fbuild_haskell
	runhaskell util/GenerateManpage.hs
	Fmanrel man/xmonad.1
}
