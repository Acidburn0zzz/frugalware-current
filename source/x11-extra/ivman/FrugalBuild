Finclude sourceforge
source=($source \
	00-$pkgname-0.6.5-config.patch rc.ivman rc.ivman-{de,hu}.po \
	README.Frugalware 01-ivman-volumemountpointfix.patch)

build()
{
	Fbuild
	Fmkdir /media
	Frcd2
	Fdoc README.Frugalware
}

