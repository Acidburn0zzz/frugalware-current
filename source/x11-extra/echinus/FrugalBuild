# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=echinus
pkgver=0.2.9
pkgrel=1
pkgdesc="A minimal WM supporting floating, tiled, and maximized layouts."
url="http://www.rootshell.be/~polachok/code"
depends=('libxft' 'zlib')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('8c67625bcb491da6b295620459eec4dbe646ddfc')

build()
{
	Fsed "-Os" "${CFLAGS}" config.mk
	Fmake
	Fexerel /usr/bin/$pkgname
	Fmanrel $pkgname.1
	Ffilerel *.xbm /usr/share/$pkgname
	Ffilerel /usr/share/$pkgname/${pkgname}rc
}

# optimization OK
