# Compiling Time: 0.36 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=icewm-testing
pkgver=1.3.2
pkgrel=1
pkgdesc="A window manager, whose goal is speed and simplicity. (devel release)"
pkgdesc_localized=('hu_HU Egy ablakkezelõ, melynek célja a sebesség és az egyszerûség.')
depends=('libstdc++' 'gtk+2' 'libice' 'libxft' 'zlib' 'libxcb')
conflicts=('icewm')
provides=('icewm')
groups=('x11-extra')
archs=('i686' 'x86_64')
# no build, at least for now
options=('nobuild' 'scriptlet')
_F_sourceforge_name=icewm
_F_sourceforge_dirname=$_F_sourceforge_name
Finclude sourceforge
# override up2date for devel release
_F_archive_name=$_F_sourceforge_name
up2date="Flasttar http://sourceforge.net/project/showfiles.php?group_id=31&package_id=176951"
source=(${source[@]} xinitrc.icewm icewm.desktop)
sha1sums=('3b551e8aed9bdc5debd4998128ded1837e3eda1e' \
          '6149ed5fae01115186d6e55adedf5bfa0fde839a' \
          '39e0879b896572c1c448a243876857f89f946c24')

build()
{
	Fmake --enable-shaped-decorations --enable-gradients --enable-depend \
	      --enable-corefonts --enable-guievents
	Fmakeinstall install-docs
	Ffile /etc/X11/sessions/icewm.desktop
	Fexe /etc/X11/xinit/xinitrc.icewm
}

