build() {
	CMake_build
	make install DESTDIR=$Fdestdir || Fdie
	Fmkdir etc/gconf/schemas
	Fmv usr/share/gconf/schemas/*.schemas etc/gconf/schemas/
	Frm usr/share/gconf/
	Fbuild_gnome_scriptlet
}

