# Compiling Time: 0.35 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=compiz-plugins-main
Finclude compiz
pkgrel=2
_F_compiz_name="compiz-fusion-plugins-main"
pkgdesc="Main plugins for Compiz Fusion"
depends=('compiz-core>=0.9.4' 'compiz-bcop>=0.8.2' 'cairo>=1.8.6-3' 'libjpeg' 'librsvg>=2.26.0-2' 'libboost>=1.46.1')
makedepends=('pkgconfig' 'perl-xml-parser' 'intltool' 'boost')
Finclude cmake gnome-scriptlet
groups=('x11-extra')
archs=('i686' 'x86_64')
sha1sums=('c9549a613d1789de4744d28ed6ae4fd1c99b31a5')
_F_cd_path="plugins-main"
source=(http://ftp.frugalware.org/pub/other/people/devil505/snapshots/$pkgname/$pkgname-$pkgver.tar.bz2)

build() {
	CMake_build
	make install DESTDIR=$Fdestdir || Fdie
	Fmkdir etc/gconf/schemas
	Fmv usr/share/gconf/schemas/*.schemas etc/gconf/schemas/
	Frm usr/share/gconf/
	Fbuild_gnome_scriptlet
}

# optimization OK
