pkgname=compton
pkgver=0.1_beta2
pkgrel=3
pkgdesc="Compton is a compositor for X, and a fork of xcompmgr-dana."
url="https://github.com/chjj/compton"
rodepends=('xwininfo' 'xprop')
 depends=('libgl>=11.1.0-3' 'libxcomposite>=0.4.4-2' 'libxrandr>=1.5.0-4' \
	'libxinerama>=1.1.3-2' 'libconfig>=1.5' 'dbus>=1.10.6-5')
makedepends=('libdrm>=2.4.66-2' 'asciidoc' 'x11-protos>=0.1-3')
_F_github_author="chjj"
_F_github_tag_v="y"
Finclude github
_F_cd_path="$pkgname-$pkgver"
groups=('x11-extra')
archs=('i686' 'x86_64')
sha1sums=('006ecc874efb7ecdad15fe1f33362e733a439109')

build()
{
	Fsed 'a2x' 'a2x --no-xmllint' Makefile
	make || Fdie
	make docs || Fdie
	Fmakeinstall DOCDIR=/usr/share/$pkgname
}


# optimization OK
