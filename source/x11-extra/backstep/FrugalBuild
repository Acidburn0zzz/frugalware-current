options=('scriptlet')
Finclude sourceforge
depends=('gtk+2>=2.20.0-2' 'glibc' 'freetype2' 'libxau>=1.0.4' 'libxdmcp' 'libxpm' 'libice' 'libxcomposite' 'libxdamage' 'libxml2')
groups=('x11-extra')
archs=('i686' 'x86_64')
