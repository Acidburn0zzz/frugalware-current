# Compiling Time: 0.50 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=sddm
pkgver=0.13.0
pkgrel=4
pkgdesc='QML based X11 display manager'
archs=('i686' 'x86_64')
groups=('x11-extra')
depends=('qt5-declarative')
makedepends=('docutils' 'qt5-tools')
_F_cmake_confopts="	-DCMAKE_INSTALL_PREFIX=/usr \
		        -DCMAKE_BUILD_TYPE=Release \
		        -DCMAKE_INSTALL_LIBEXECDIR=/usr/lib/sddm \
		        -DBUILD_MAN_PAGES=ON"

_F_github_tag=y
_F_github_tag_v=y
_F_archive_grepv="0.1.0"

conflicts=('lightdm' 'lightdm-gtk-greeter' 'lightdm-kde' 'lightdm-webkit-greeter' 'kwin')
replaces=('kwin')
provides=('kwin')

Finclude github cmake
sha1sums=('27df34e18c8ab602d035fe80958824ddb74effd9')

source=("${source[@]}" \
	sddm.conf)
sha1sums=("${sha1sums[@]}" \
	28bb36e8068ee32c64efcfde43a9422e901028e5)
build() {
	CMake_build
	Finstall 755 /etc/sddm.conf

}
# optimization OK
