pkgname=xcursor-theme-vanilla-dmz
pkgver=0.4
pkgrel=1
pkgdesc="Vanilla DMZ cursor theme"
url="http://jimmac.musichall.cz/themes.php?skin=7"
depends=('libx11' 'libxcursor')
groups=('x11-extra')
archs=('i686' 'x86_64')
_F_archive_name="vanilla-dmz"
up2date="Flasttar $url"
source=(http://jimmac.musichall.cz/zip/$_F_archive_name-$pkgver.tar.bz2)
sha1sums=('f62095110ec288b1382f33909f5119a232ebc125')

build() {
  Fmkdir usr/share/icons/Vanilla-DMZ
  Fcp Vanilla-DMZ/cursors usr/share/icons/Vanilla-DMZ/cursors
  Finstall 644 Vanilla-DMZ/index.theme usr/share/icons/Vanilla-DMZ/index.theme
}

