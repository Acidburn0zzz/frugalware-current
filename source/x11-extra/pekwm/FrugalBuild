# Compiling Time: 0.35 SBU
# Old Maintainer: DNAku <DNAku@frugalware.org>
# Maintainer: detto <detto_o@freenet.de>

pkgname=pekwm
pkgver=0.1.6
pkgrel=1
pkgdesc="The Pek Window Manager is a lightweight window manager"
url="http://pekwm.org"
depends=('libsm' 'libxft' 'libxpm')
makedepends=('libpng' 'libjpeg')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep -m1 bz2 | sed 's/.tar.*//g'| sed 's/.*wm.//g'"
source=(http://pekwm.org/files/$pkgname-$pkgver.tar.gz $pkgname.desktop)
sha1sums=('43fbc52c0d340977e6d0194f19df1c3c55e07204' \
          '77a0bbe2ffd18920f791ee57a0aee76c439e99ee')

build() {
	Fbuild
	Ffile /etc/X11/sessions/$pkgname.desktop
}

# optimization OK
