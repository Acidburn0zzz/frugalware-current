#!/bin/bash
#
# Start compiz within Gnome or Xfce
#

if [ -x "/usr/bin/compiz" ]; then
	if [ -e "/etc/sysconfig/compiz" ]; then
		source /etc/sysconfig/compiz
		if [ "$ENABLE_COMPIZ" == "1" ]; then
			if [ `ps -A | grep Xgl | wc -l` == "1" ]; then
                                LD_LIBRARY_PATH="/usr/lib/mesa-cvs/lib/" compiz --replace &
			else
				compiz --replace --use-cow gconf &
			fi
			if [ "$USE_CGWD" == "1" -a -x "/usr/bin/cgwd" ]; then
				cgwd --replace &
			else
				gtk-window-decorator --replace &
			fi
		fi
	fi
fi
