options+=('asneeded')

pkgname=mate-control-center
pkgver=1.7.90
pkgrel=1
pkgdesc="The MATE Control center"
archs=('i686' 'x86_64')
groups=('mate-extra')
depends=('dconf' 'xscreensaver' 'marco' 'mate-menus' \
       'mate-settings-daemon' 'mate-desktop' 'libxxf86misc' 'libxkbfile' \
       'libcanberra-gtk' 'shared-mime-info' 'unique')
makedepends=('mate-common' 'intltool' 'desktop-file-utils' 'itstool')
_F_mate_desktop="y"
_F_mate_glib="y"
_F_mate_mime="y"
Finclude mate mate-scriptlet
Fconfopts+=" --with-help-formats=txt --with-gtk=3.0"
sha1sums=('f70ab56573dde0d2b25f48a5b228e1963d55677e')

build()
{
	Fcd
	Fmake
	Fmakeinstall
	Frm usr/share/applications/mimeinfo.cache
	Fbuild_mate_scriptlet
}

# optimization OK
