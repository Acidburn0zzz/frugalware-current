# Last Modified: Mon, 14 Nov 2005 00:34:27 +0100
# Compiling Time: 0.18 SBU
# Maintainer: crazy <malagarax@gmx.net>

pkgname=speex
pkgver=1.1.10
pkgrel=1
pkgdesc="Speex is an audio codec tuned for speech"
url="http://www.speex.org/"
depends=('libogg')
archs=('i686')
up2date="lynx -dump $url/download.html|Flasttar"
groups=('multimedia') 
source=(http://downloads.us.xiph.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('152213d28152528222752d43b2342d5bf349c3c1')

build() 
{
	Fbuild --sysconfdir=/etc --disable-dependency-tracking \
		--with-gnu-ld
	Fmv /usr/include/speex/* /usr/include/
	Frm /usr/include/speex/
	Fln . /usr/include/speex
}

# optimalization OK

# vim: ft=sh
