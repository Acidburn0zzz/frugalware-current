# Compiling Time: 0.18 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=speex
pkgver=1.2beta1
pkgrel=1
pkgdesc="Speex is an audio codec tuned for speech"
url="http://www.speex.org/"
depends=('libogg')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.speex.org/downloads/|grep '.tar.gz'|sort -r|head -n1|sed 's/.*-\(.*\).t.*/\1/'"
groups=('multimedia') 
source=(http://downloads.us.xiph.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('c1841de0e13a8326d5f0eda1a9f7a2ca444d9a25')

build() 
{
	Fbuild --sysconfdir=/etc --disable-dependency-tracking \
		--with-gnu-ld
	Fmv usr/include/speex/*.h usr/include/
	Frm usr/include/speex/
	Fln . /usr/include/speex
}

# optimalization OK

# optimization OK
