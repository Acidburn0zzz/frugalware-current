# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=libdvbpsi
pkgver=0.1.5
pkgrel=1
pkgdesc="library for MPEG TS/DVB PSI tables decoding and generation"
url="http://www.videolan.org/libdvbpsi"
depends=('glibc')
preup2date=`lynx -dump 'http://download.videolan.org/pub/libdvbpsi/?C=M;O=D' | grep '[0-9]\.[0-9]' | sed -ne 's|.*]\(.*\)/.*|\1|' -e '1 p'`
up2date="lynx -dump 'http://download.videolan.org/pub/libdvbpsi/$preup2date/?C=M;O=D' | grep ]libdvbpsi | sed -ne 's/.*libdvbpsi4-\([0-9\.]*\).t.*/\1/' -e '1 p'"
source=(http://www.videolan.org/pub/libdvbpsi/$preup2date/${pkgname}4-$pkgver.tar.gz)
md5sums=('47612d2f8a4d4dee746a166d8b7f6f77')
license=('GPL2')
groups=('multimedia')
archs=('x86_64')
sha1sums=('5974b94b27ea7197eb6a38b8a590be3e76435087')

build() {
	Fcd ${pkgname}4-$pkgver
	Fmake --enable-release
	Fmakeinstall
}

# optimalization OK

