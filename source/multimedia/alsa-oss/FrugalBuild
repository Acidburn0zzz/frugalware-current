pkgname=alsa-oss
pkgver=1.0.6
pkgrel=1
pkgdesc="OSS compatibility library"
url="http://www.alsa-project.org"
depends=('glibc' 'alsa-lib')
up2date=`lynx -dump http://www.alsa-project.org/ |grep 'Stable release' -12|tail -n 1|tr -s ' '|cut -d ] -f 2`
source=(ftp://ftp.alsa-project.org/pub/oss-lib/$pkgname-$pkgver.tar.bz2)
md5sums=('b104ba44268718cacf36fa18383162fe')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
