pkgname=x264
pkgver=20060502
pkgrel=1
pkgdesc="A free h264/avc encoder"
url="http://developers.videolan.org/x264.html"
depends=('glibc')
[ "$CARCH" == "i686" ] && makedepends=('nasm')
[ "$CARCH" == "x86_64" ] && makedepends=('yasm')
makedepends=(${makedepends[@]} 'gpac')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date=$pkgver
source=(ftp://ftp.videolan.org/pub/videolan/x264/snapshots/x264-snapshot-$pkgver-2245.tar.bz2)
sha1sums=('a1a1ec0c5a7d04428449594bff0633d4a96b01aa')

build()
{
	Fcd $pkgname-snapshot-$pkgver-2245/
	Fsed "CFLAGS=\"-Wall -I. -O4" "CFLAGS=\"-Wall -I. $CFLAGS" configure
	Fbuild --enable-pthread \
		--enable-shared \
		--enable-mp4-output
	# DON'T forget to check the link!!!
	Fln libx264.so.46 /usr/lib/libx264.so
}

# optimization OK
