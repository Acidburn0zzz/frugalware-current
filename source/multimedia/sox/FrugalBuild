pkgname=sox
pkgver=14.0.0
pkgrel=1
pkgdesc="A universal sound converter, player, and recorder"
url="http://sox.sourceforge.net/"
depends=('libvorbis' 'lame' 'libmad' 'bash' 'alsa-lib')
groups=('multimedia')
archs=('i686' 'x86_64')
Finclude sourceforge

build()
{
	Fmake
	Fmakeinstall install
}
