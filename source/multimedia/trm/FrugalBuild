# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=trm
pkgver=0.2.1
pkgrel=1
pkgdesc="The TRM Generator is a small test application that generates Relatable TRM acoustic fingerprints."
url="http://www.musicbrainz.org/products/trmgen/download.html"
depends=('libmusicbrainz')
groups=('multimedia')
up2date=`lynx -dump http://www.musicbrainz.org/products/trmgen/download.html|grep 'Source Distribution'|tr -s ' '|cut -d ' ' -f 5`
source=(ftp://ftp.musicbrainz.org/pub/musicbrainz/$pkgname-$pkgver.tar.gz)
md5sums=('3f7e6c30cb91429313ca1a27df47e8bc')


build() {
        cd $startdir/src/$pkgname-$pkgver
        ./configure --prefix=/usr
        make || return 1
	mkdir $startdir/pkg/usr
	mkdir $startdir/pkg/usr/bin
        make prefix=$startdir/pkg/usr install
}
