pkgname=mpgtx
pkgver=1.3.1
pkgrel=3
pkgdesc="Allows you to split, join, demultiplex, manipulate ID3v1 tags"
url="http://mpgtx.sourceforge.net/"
depends=('libstdc++')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=22678'|grep -m 1 -o 'mpgtx-[0-9\.]\+[0-9]'|sed 's|mpgtx-||'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('58b3d18b6dac968e8dd969a7b33c8a8fc31569cd')
license="GPL2"
groups=('multimedia')
archs=('i686' 'x86_64')

build()
{
    Fconf
    Fsed "CFLAGS=" "CFLAGS=$CFLAGS " Makefile
    make || return 1
    Fsed "PREFIX=/usr" "PREFIX=\$(DESTDIR)/usr" Makefile
    Fmakeinstall
}

# optimalization OK

