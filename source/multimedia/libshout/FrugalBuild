# Compiling Time: 0.14 SBU
# Maintainer: Pingax <pingax@frugalware.fr>

pkgname=libshout
pkgver=2.4.1
pkgrel=4
pkgdesc="Library which can be used to write a source client like ices."
url="http://www.icecast.org/"
groups=('multimedia')
archs=('i686' 'x86_64')
depends=('libvorbis>=1.3.5-5' 'libtheora>=1.1.1-5' 'speex>=1.2rc2-5' 'openssl>=1.0.2-8')
up2date="lynx -dump 'http://downloads.us.xiph.org/releases/libshout/?C=M;O=A'|grep 'libshout-\(.*\).tar.gz$'|sort -n -r|head -n 1|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://downloads.us.xiph.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('cca5606f38e84a4c46223796b06cf7483abaa32f')

build()
{
	Fbuild
	Frm usr/bin/
	Fmv usr/share/doc/$pkgname usr/share/doc/$pkgname-$pkgver
}


# optimization OK
