pkgname=mpg321
pkgver=0.2.10
pkgrel=1
pkgdesc="A free command-line mp3 player"
url="http://mpg321.sourceforge.net/"
depends=('libao' 'libid3tag' 'libmad')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump http://mpg321.sourceforge.net/|grep released|sed -n -e 's/.*1 \(.*\) r.*/\1/' -e '1 p'"
source=(http://dl.sourceforge.net/sourceforge/mpg321/$pkgname-$pkgver.tar.gz)
md5sums=('bb403b35c2d25655d55f0f616b8f47bb')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
