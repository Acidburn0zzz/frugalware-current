pkgname=codecs
pkgver=20040626
pkgrel=1
pkgdesc="Binary codecs for MPlayer"
url="http://www1.mplayerhq.hu/MPlayer/releases/codecs/"
depends=()
up2date=`lynx -dump http://www.mplayerhq.hu/MPlayer/releases/codecs/MD5SUMS|sed -n -e 's/.tar.bz2//' -e '1 p'|cut -d ' ' -f 3|cut -d - -f 2`
source=(http://www1.mplayerhq.hu/MPlayer/releases/codecs/win32codecs-$pkgver.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/releases/codecs/essential-$pkgver.tar.bz2 \
	http://www1.mplayerhq.hu/MPlayer/releases/codecs/xanimdlls-$pkgver.tar.bz2)
md5sums=('a29b1f03b425546bdd321cfc3e6ffdea' 'a23c6a22bc79f1b0ddc2285f8e2240c2' \
         'a7c980a1a94fbac6ebd34c7485a1891d')

# we have to use makepkg --nostrip

build() {
	mkdir -p $startdir/pkg/usr/lib/win32
	mv $startdir/src/*/* $startdir/pkg/usr/lib/win32
	chown -R root.root $startdir/pkg/usr/lib/win32
	chmod 755 $startdir/pkg/usr/lib/win32/*
}
