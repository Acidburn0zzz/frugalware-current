pkgname=codecs
pkgver=20050412
pkgrel=3
pkgdesc="Binary codecs, for Linux x86"
url="http://www1.mplayerhq.hu/homepage/design7/codecs.html"
depends=('glibc')
groups=('multimedia')
archs=('i686')
up2date="lynx -dump http://www2.mplayerhq.hu/homepage/design7/codecs.html|grep all.*tar.bz2$|sed -n -e 's/.*l-\([0-9]*\).tar.bz2$/\1/' -e '1 p'"
source=(http://www2.mplayerhq.hu/MPlayer/releases/codecs/all-$pkgver.tar.bz2)
sha1sums=('39b949dacc015d8e3aa308c24c74a97598fe92c9')

build() {
	cd $startdir/src/all-$pkgver
	mkdir -p $startdir/pkg/usr/lib/win32
	
	mv * $startdir/pkg/usr/lib/win32
	chown -R root.root $startdir/pkg/usr/lib/win32
	chmod 755 $startdir/pkg/usr/lib/win32/*
}

# vim: ft=sh
