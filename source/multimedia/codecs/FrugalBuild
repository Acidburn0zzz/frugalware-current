pkgname=codecs
pkgver=20060501
pkgrel=1
pkgdesc="Binary codecs, for Linux x86"
url="http://www4.mplayerhq.hu/homepage/design7/codecs.html"
depends=('glibc')
groups=('multimedia')
archs=('i686')
up2date="lynx -dump http://www4.mplayerhq.hu/MPlayer/releases/codecs/|grep 'all-2'|grep '.tar.bz2'|sort -r -n|head -n 1|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://www4.mplayerhq.hu/MPlayer/releases/codecs/all-$pkgver.tar.bz2)

build() {
	cd $startdir/src/all-$pkgver
	mkdir -p $startdir/pkg/usr/lib/win32
	
	mv * $startdir/pkg/usr/lib/win32
	chown -R root.root $startdir/pkg/usr/lib/win32
	chmod 755 $startdir/pkg/usr/lib/win32/*
}

sha1sums=('711c49b2af5051878dd7cd492fff7a778ece177b')
