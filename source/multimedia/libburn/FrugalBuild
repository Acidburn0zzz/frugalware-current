# Compiling Time: 0.21 SBU
# Maintainer: DeX77 <dex77@frugalware.org>
# Contributor: crazy <crazy@frugalware.org>

pkgname=libburn
pkgver=1.4.6
pkgrel=3
pkgdesc="Disc reading/writing library."
url="https://dev.lovelyhq.com/libburnia/web/wikis"
depends=('glibc>=2.25')
groups=('multimedia')
archs=("x86_64")

_F_scm_type="git"
_F_scm_url="https://dev.lovelyhq.com/libburnia/libburn.git"
_F_scm_tag="$pkgver"
Finclude scm
up2date="Flasttar $url/Releases"

subpkgs=('cdrskin')
subdescs=('burns preformatted data to CD, DVD, and BD via libburn.')
subrodepends=("libburn=$pkgver")
subgroups=('apps-extra')
subarchs=("x86_64")

build() {
	Funpack_scm
	Fexec  ./bootstrap || Fdie

	Fbuild
	Fsplit cdrskin usr/share/man
	Fsplit cdrskin usr/bin
}

# optimization OK
