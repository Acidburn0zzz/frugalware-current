# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=bashburn
pkgver=1.8.5
pkgrel=2
pkgdesc="A CD burning shell script."
rodepends=('bash' 'cdrtools' 'cdrdao' 'mpg321' 'lame' 'vorbis-tools' 'flac' \
	 'eject')
groups=('multimedia')
backup=(etc/bashburnrc)
archs=('i686' 'x86_64')
_F_sourceforge_dirname="bashburn"
_F_sourceforge_name="BashBurn"
Finclude sourceforge

build()
{
	Fcd BashBurn-$pkgver
	Fsed "BBROOTDIR\:.*" "BBROOTDIR\: /usr/lib/BashBurn" bashburnrc
	Fexerel /usr/lib/BashBurn/BashBurn.sh
	mv burning config convert menus misc lang $Fdestdir/usr/lib/BashBurn
	Finstallrel 655 /etc/bashburnrc
	Fln /usr/lib/BashBurn/BashBurn.sh /usr/bin/bashburn
	Fdocrel HOWTO
}
sha1sums=('4f9c4e6d994b7abc34108a40e1043e89e1f8286c')
