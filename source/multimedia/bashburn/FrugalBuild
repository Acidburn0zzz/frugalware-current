# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=bashburn
pkgver=1.7.1
pkgrel=1
pkgdesc="A CD burning shell script."
rodepends=('bash' 'cdrtools' 'cdrdao' 'mpg321' 'lame' 'vorbis-tools' 'flac' \
	 'eject')
groups=('multimedia')
archs=('i686' 'x86_64')
Finclude sourceforge
source=(http://dl.sourceforge.net/sourceforge/bashburn/BashBurn-$pkgver.tar.gz)
sha1sums=('1b8cc4796536c8a8c35cf0e41987ad5945689df4')

build()
{
	Fcd BashBurn-$pkgver
	Fsed "export  BBCONFFILE=/etc/bashburnrc" \
		"export  BBCONFFILE=/etc/bashburn/bashburnrc" BashBurn.sh
	Fsed "BBROOTDIR\:.*" "BBROOTDIR\: /usr/lib/BashBurn" bashburnrc
	Fexerel /usr/lib/BashBurn/BashBurn.sh
	mv burning config convert menus misc lang $Fdestdir/usr/lib/BashBurn
	Finstallrel 655 /etc/bashburn/bashburnrc
	Fln /usr/lib/BashBurn/BashBurn.sh /usr/bin/bashburn
	Fdocrel HOWTO
}
