# Last modified: Sat, 18 Jun 2005 01:09:04 +0200
# Compiling time: ~1 minutes
# Maintainer: Janny <janny@vnet.hu>
# Contributor: VMiklos <mamajom@axelero.hu>

pkgname=xvidcore
pkgver=1.1.0
extraver=beta2
pkgrel=1
pkgdesc="XviD is an open source MPEG-4 video codec"
url="http://www.xvid.org"
license="GPL"
depends=('glibc')
archs=('i686')
groups=('multimedia')
up2date="lynx -dump http://www.xvid.org/downloads.html|grep $pkgname-[0-9\.]*\.tar.gz|sed -ne 's/.*-\(.*\)-beta2\.t.*/\1/;1 p'"
source=(http://downloads.xvid.org/downloads/$pkgname-$pkgver-$extraver.tar.gz)
md5sums=('85267b5262b57673cf06c35bf3d6d472')

build()
{
	Fcd $pkgname-$pkgver-$extraver/build/generic
	Fbuild || return 1

	# Fix dynamic libraries
	Fln libxvidcore.so.4.1 /usr/lib/libxvidcore.so
	Fln libxvidcore.so.4.1 /usr/lib/libxvidcore.so.4.1.0
	Fln libxvidcore.a /usr/lib/libxvidcore.a.0
}

# vim: ft=sh
