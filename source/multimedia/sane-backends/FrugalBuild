# Last Modified: Thu, 23 Feb 2006 18:48:06 +0100
# Compiling Time: 0.16 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=sane-backends
pkgver=1.0.17
pkgrel=1
pkgdesc="Scanner Access Now Easy"
url="http://www.sane-project.org"
depends=('libieee1284' 'libgphoto2')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.sane-project.org/|grep \"ackend.*released\"|tr -s ' '|cut -d ' ' -f 3|cut -d - -f 3"
source=(http://alioth.debian.org/download.php/1347/$pkgname-$pkgver.tar.gz)
sha1sums=('a73e01575458a5fb7dc265cea50c6740555e1711')

build() {
	Fmake
	Fmakeinstall configdir=$Fdestdir/etc/sane.d localstatesanedir=$Fdestdir/var/lock/sane
	# add hotplug support for USB scanners
	Fmkdir /etc/hotplug/usb
	Ffilerel tools/hotplug/{libsane.usermap,libusbscanner} /etc/hotplug/usb/
	Fmv /usr/{doc,share}
	Fmv /usr/share/doc/sane{,-backends}-1.0.17
}

# vim: ft=sh

# optimalization OK
