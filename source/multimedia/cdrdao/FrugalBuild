pkgname=cdrdao
pkgver=1.2.1
pkgrel=1
pkgdesc="Records audio/data CD-Rs in disk-at-once (DAO) mode"
url="http://cdrdao.sourceforge.net/"
makedepends=('pccts')
depends=('libmad' 'lame' 'libstdc++' 'libao' 'libvorbis')
groups=('multimedia')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('c98f21b0f8d8d9d3c3aa63b75166c555cfe22633')

build()
{
	Fcd
    	Facu
	Fbuild --with-lame --with-pcctsbin=/usr/bin \
		--with-pcctsinc=/usr/include/pccts
}

# optimalization ok
