pkgname=libmpcdec
pkgver=1.2.5
pkgrel=1
pkgdesc="Musepack decoding library."
url="http://musepack.net/"
depends=('glibc')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.musepack.net/index.php?pg=src|grep -m1 libmpcdec|tr -d [:alpha:]|tr -d [:blank:]"
source=(http://files.musepack.net/source/$pkgname-$pkgver.tar.bz2)
sha1sums=('42f015bdbd49da9b6abfb75a706b09842bbf08ac')

build ()
{
    Fcd
    ./autogen.sh $Fconfopts
    Fbuild
}

# optimization OK
