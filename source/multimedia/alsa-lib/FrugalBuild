# Compiling Time: 0.58 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=alsa-lib
pkgver=1.0.14
pkgextraver=a
pkgrel=3sayshell1
pkgdesc="An alternative implementation of Linux sound support"
url="http://www.alsa-project.org"
depends=('glibc')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep -o 'alsa-lib-\(.*\)tar.bz2'|grep -v rc|sed 's/.*lib-\(.*\).t.*/\1/;s/$pkgextraver//;q'"
source=(ftp://ftp.alsa-project.org/pub/lib/$pkgname-$pkgver$pkgextraver.tar.bz2 \
	fix_wrong_softfloat_detection.patch)
sha1sums=('0d0e217b778c411220471cd941ae48c4af675e61' \
          '70794ca02ee6d1da9994c309a8ebfe30a2c872f9')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
}

# optimization ok
