# Last Modified: Thu, 02 Jun 2005 12:00:46 +0000
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=libid3tag
pkgver=0.15.1b
pkgrel=2
pkgdesc="ID3 tag manipulation library"
url="http://www.underbit.com/products/mad/"
depends=('zlib')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="wget --passive-ftp -O - -q ftp://ftp.mars.org/pub/mpeg/|grep 'libid3tag.*\.tar\.gz<'|tail -n 1|sed 's/.*libid3tag-\(.*\)\.tar\.gz.*/\1/'"
source=(ftp://ftp.mars.org/pub/mpeg/$pkgname-$pkgver.tar.gz id3tag.pc)
md5sums=('e5808ad997ba32c498803822078748c3' '8db4c0d524004e24fbbdc00fb7086047')

build() {
	Fbuild || return 1
	mkdir $Fdestdir/usr/lib/pkgconfig/
	cp $Fsrcdir/id3tag.pc $Fdestdir/usr/lib/pkgconfig/id3tag.pc
}
