# Last Modified: Mon, 09 May 2005 00:36:37 +0200
# Compiling Time: ~5 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=id3lib
pkgver=3.8.3
pkgrel=1
pkgdesc="A library for reading, writing, and manipulating ID3v1 and ID3v2 tags."
url="http://id3lib.sourceforge.net/"
depends=('gcc' 'zlib')
groups=('multimedia')
archs=('i686')
up2date="lynx -dump $url|grep Latest|sed 's/.*]\(.*\)/\1/'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('19f27ddd2dda4b2d26a559a4f0f402a7')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
