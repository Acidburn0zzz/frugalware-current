# Compiling Time: 0.12 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=mpd
pkgver=0.14
pkgrel=4
pkgdesc="the Music Player Daemon"
_F_sourceforge_dirname="musicpd"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
url="http://musicpd.org"
depends=('libmikmod>=3.1.7' 'flac>=1.1.3' 'libao' 'audiofile>=0.1.7' 'libvorbis' \
	 'faad2' 'libid3tag' 'libmad' 'libshout' 'libmpcdec' 'curl')
backup=('etc/mpd.conf')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($source rc.mpd rc.mpd-hu.po)
sha1sums=('e9de568ffd9c1d414ffaca6f84671891bfe03158' \
          '729f3b2ee9e8003343c8df49394e1c5762dae5ce' \
          'b5813f55e9e895d977b869c77667daa85c303e57')

build()
{
	Fbuild --enable-ao
	Ffilerel doc/mpdconf.example /etc/mpd.conf
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
}

# optimization OK

