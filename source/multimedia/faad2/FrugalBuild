# Compiling Time: 0.76 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=faad2
pkgver=2.7
pkgrel=5
pkgdesc="ISO AAC audio decoder"
_F_sourceforge_dirname="faac"
_F_sourceforge_realname="$pkgname-src"
Finclude sourceforge
url="http://www.audiocoding.com/"
depends=('glibc>=2.22-7')
groups=('multimedia')
archs=('i686' 'x86_64')
sha1sums=('80eaaa5cc576c35dd28863767b795c50cbcc0511' \
          '247658aa795cd6d44a153fae8c5cb62e427f3ecf' \
          '0aecf4c132a43fb8e28aee804374918aaa308c29' \
          '4b548a08f7611a5f4f395c7c1d4cef5e37368af2')
source=($source shared.patch \
	include.patch  man.patch)

build()
{
	[ "$CARCH" = "i686" ] && unset MAKEFLAGS && export MAKEFLAGS="-j1"
	[ "$CARCH" = "x86_64" ] && CFLAGS+=" -fPIC"

	Fcd $pkgname-$pkgver
	Fpatchall
	Fsed 'AC_PROG_CC' "AC_PROG_CC\nAC_PROG_CXX" configure.in
	Fsed 'AM_CONFIG_HEADER' 'AC_CONFIG_HEADERS' configure.in
	Fautoreconf
	Fmake
	Fmakeinstall
}


# optimization OK
