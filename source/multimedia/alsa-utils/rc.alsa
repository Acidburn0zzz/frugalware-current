. /etc/rc.d/rc.functions

# chkconfig: 2345 99 00
# description: Loads ALSA mixer settings

[ -d /proc/asound ] || exit 1
[ -r /etc/asound.state ] || exit 1

if [ "$1" = "start" ]; then
	start "$startalsa"
	alsactl restore
	ok $?
fi
