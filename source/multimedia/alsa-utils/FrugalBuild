pkgname=alsa-utils
pkgver=1.0.9
pkgrel=1
pkgdesc="An alternative implementation of Linux sound support"
url="http://www.alsa-project.org"
depends=('alsa-lib>=1.0.9' 'dialog' 'pciutils')
groups=('multimedia')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump $url |grep 'Stable release' -8|sed -n 's/.*]\(.*\)/\1/;$ p'"
source=(ftp://ftp.alsa-project.org/pub/utils/$pkgname-$pkgver.tar.bz2 rc.alsa)
md5sums=('c7037c54ed06d32577947f632f2c677b' '809574de2c627ad0cd3f2fbfbefa5c72')

build()
{
	Fbuild || return 1
	Frcd alsa
}

