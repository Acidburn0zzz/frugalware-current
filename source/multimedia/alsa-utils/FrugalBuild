pkgname=alsa-utils
pkgver=1.0.11
pkgrel=1
pkgdesc="An alternative implementation of Linux sound support"
url="http://www.alsa-project.org"
depends=("alsa-lib>=$pkgver" 'dialog' 'pciutils')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep 'Stable release' -8|sed -n 's/.*]\(.*\)/\1/;$ p'"
source=(ftp://ftp.alsa-project.org/pub/utils/$pkgname-$pkgver.tar.bz2 rc.alsa \
        rc.alsa-{de,hu}.po)

build()
{
	Fbuild
	Frcd2 alsa
}

# optimization OK
sha1sums=('abc890763afb5c4e9d5a3b4a1649a0145368d389' \
	  '127003ce17c5a839faf0dd728227576f99eff2be' \
	  '817a8676b205865af86b6cbc4859561f9f8c2e53' \
	  'abe9418c9f379419b5ffce7ef5a5955e797b1813')
