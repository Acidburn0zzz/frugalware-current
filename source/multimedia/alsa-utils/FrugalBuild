pkgname=alsa-utils
pkgver=1.0.8
pkgrel=2
pkgdesc="An alternative implementation of Linux sound support"
url="http://www.alsa-project.org"
depends=('alsa-lib=1.0.8' 'dialog' 'pciutils')
groups=('multimedia')
install=$pkgname.install
up2date=`lynx -dump $url |grep 'Stable release' -8|sed -n 's/.*]\(.*\)/\1/;$ p'`
source=(ftp://ftp.alsa-project.org/pub/utils/$pkgname-$pkgver.tar.bz2 rc.alsa)
md5sums=('c72d0efa9c88770a10733ec2abc1a872' '809574de2c627ad0cd3f2fbfbefa5c72')

build()
{
	Fbuild || return 1
	Frcd alsa
}

