pkgname=alsa-utils
pkgver=1.0.10
pkgrel=1
pkgdesc="An alternative implementation of Linux sound support"
url="http://www.alsa-project.org"
depends=("alsa-lib>=$pkgver" 'dialog' 'pciutils')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep 'Stable release' -8|sed -n 's/.*]\(.*\)/\1/;$ p'"
source=(ftp://ftp.alsa-project.org/pub/utils/$pkgname-$pkgver.tar.bz2 rc.alsa rc.alsa-{de,hu}.po)
sha1sums=('0432425d7ca6592fb8050e4a776b23a5258faeaf' \
	  '30753e2b7b6df42b793ff25574c243dee3f01ef2' \
	  '817a8676b205865af86b6cbc4859561f9f8c2e53' \
	  'abe9418c9f379419b5ffce7ef5a5955e797b1813')

build()
{
	Fbuild
	Frcd2 alsa
}

