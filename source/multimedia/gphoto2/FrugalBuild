# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=gphoto2
pkgver=2.1.5
pkgrel=1
pkgdesc="A set of digital camera applications for Unix-like systems."
url="http://www.gphoto.org"
depends=('glibc' 'libgphoto2' 'libexif' 'libjpeg' 'ncurses' 'popt' 'readline')
groups=('multimedia')
up2date="lynx -dump $url|grep '[0-9].[0-9] has' |sed -n 's/.*2 \(.*\) h.*/\1/;1 p'"
source=(http://dl.sourceforge.net/gphoto/$pkgname-$pkgver.tar.gz)
md5sums=('9bd1a033389f9e4e6425dda4f6e603c9')

build() {
	cd $startdir/src/$pkgname-$pkgver
	# patch -p1 < $startdir/src/$pkgname-$pkgver-libexif06.diff
	./configure --prefix=/usr
	
	make || return 1

	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
