# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=lame
pkgver=3.97
pkgrel=3
pkgdesc="an LGPL MP3 encoder."
depends=('ncurses')
groups=('multimedia')
archs=('i686' 'x86_64')
Finclude sourceforge
source=($source lame-3.97-asneeded.patch)
up2date="lynx -dump http://lame.sourceforge.net/|grep release|sed 's/.*v\([^ ]*\) .*/\1/;q'"
if [ "$CARCH" == "i686" ]; then
	makedepends=('nasm')
	Fconfopts="$Fconfopts --enable-nasm"
	unset MAKEFLAGS
fi

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
}

sha1sums=('acf56065f4e31ce023b0f99002d537adb1ec09df'\
          '5063e692ee1a6849eddcb228ea521088ef2fa3fd')
# optimization OK
