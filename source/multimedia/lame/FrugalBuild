pkgname=lame
pkgver=3.98
pkgrel=1
pkgdesc="An LGPL MP3 encoder."
depends=('ncurses')
groups=('multimedia')
archs=('i686' 'x86_64' 'ppc')
Finclude sourceforge
source=(${source/$pkgver/${pkgver/./}})
up2date="lynx -dump http://lame.sourceforge.net/|grep release|sed 's/.*v\([^ ]*\) .*/\1/;q'"
if [ "$CARCH" == "i686" ]; then
	makedepends=('nasm')
	Fconfopts="$Fconfopts --enable-nasm"
fi
sha1sums=('287979d076834882c99d0cc01ddbd9b3697ceaae')
_F_cd_path="$pkgname-${pkgver/./}"
# optimization OK
