# Last Modified: Mon, 09 May 2005 00:39:09 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=aumix
pkgver=2.8
pkgrel=1
pkgdesc="Ncurses audio mixer with gpm support"
url="http://jpj.net/~trevor/aumix.html"
depends=('glibc' 'ncurses' 'gpm')
groups=('multimedia')
archs=('i686')
up2date="lynx -dump $url|grep Version|sed 's/.*n \(.*\) w.*/\1/'"
source=(http://jpj.net/~trevor/aumix/aumix-$pkgver.tar.bz2 \
	$pkgname-$pkgver-alsa.diff)
md5sums=('dc3fc7209752207c23e7c94ab886b340' 'ec912dc4075c0fb37537ac9e04c56f4a')

build() {
  cd $startdir/src/$pkgname-$pkgver
   patch -p0 < $startdir/src/$pkgname-$pkgver-alsa.diff
  ./configure --prefix=/usr --without-gtk --without-gtk1
  make || return 1
  make DESTDIR=$startdir/pkg install
}
