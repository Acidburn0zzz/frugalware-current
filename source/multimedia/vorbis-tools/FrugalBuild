pkgname=vorbis-tools
pkgver=1.0.1
pkgrel=1
pkgdesc="Tools to play, encode and manage Ogg Vorbis files"
url="http://www.vorbis.com/"
depends=('libvorbis' 'libao' 'libogg')
groups=('multimedia')
up2date="lynx -dump 'http://downloads.xiph.org/releases/vorbis/?C=M;O=D' | grep vorbis-tools-[0-9\.]*.tar.gz|sed -n 's/.*-\(.*\).t.*/\1/ ; 1 p'"
source=(http://downloads.xiph.org/releases/vorbis/$pkgname-$pkgver.tar.gz)
md5sums=('80d3ae3bbae2a488d433d86b8fd64777')

build() {

	cd $startdir/src/$pkgname-$pkgver
	
	configure --prefix=/usr
	make || return 1

	make DESTDIR=$startdir/pkg install
						
}

# vim: ft=sh
