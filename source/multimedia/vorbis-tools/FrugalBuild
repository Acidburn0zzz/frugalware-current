pkgname=vorbis-tools
pkgver=1.1.1
pkgrel=4kalgan1
pkgdesc="Tools to play, encode and manage Ogg Vorbis files"
url="http://www.vorbis.com/"
depends=('libvorbis' 'libao' 'libogg' 'curl')
groups=('multimedia')
archs=('i686' 'x86_64')
#up2date="lynx -dump 'http://downloads.xiph.org/releases/vorbis/?C=M;O=D'|grep '/vorbis-tools.*\.tar\.*'|sed -n 's/.*-\(.*\)\.tar\..*/\1/; 1 p'"
up2date="lynx -dump http://www.xiph.org/downloads/|grep -m1 'vorbis-tools'|sed 's/.* \(.*\) .*.tar.gz/\1/'"
source=(http://downloads.xiph.org/releases/vorbis/$pkgname-$pkgver.tar.gz speex.diff)
sha1sums=('a1394b39905b389d72f12c2a9f0c86a33d07a487' \
          'e2baf38651519d4ded7de8a16ecaa131a2009359')

build() {
	Fcd
	Fsed "CURLOPT_MUTE" "-2" ogg123/http_transport.c
	Fbuild
}

# optimization OK
