pkgname=libtunepimp
pkgver=0.3.0
pkgrel=1
pkgdesc="The TunePimp library is a development library to create MusicBrainz enabled tagging applications."
url="http://musicbrainz.org/products/tunepimp/"
depends=('libmusicbrainz' 'libmad' 'flac' 'libvorbis' 'libid3tag')
conflicts=('trm')
replaces=('trm')
groups=('multimedia')
archs=('i686')
up2date="lynx -dump $url/download.html|grep 'Source D'|sed 's/.*) \([^ ]*\) .*/\1/'"
source=(ftp://ftp.musicbrainz.org/pub/musicbrainz/$pkgname-$pkgver.tar.gz \
        $pkgname-$pkgver-gcc4.patch)
sha1sums=('54c60232f3b06f2316e2b1130eb981352995dfc8' \
	  '77ed59188a4f7f8707d5cdb24f2538724be065d6')
force="y"

build() 
{
	Fmkdir /usr/lib/pkgconfig
	Fbuild --disable-dependency-tracking --with-gnu-ld
}

# optimalization OK

