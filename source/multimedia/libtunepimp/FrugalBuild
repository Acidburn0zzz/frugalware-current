pkgname=libtunepimp
pkgver=0.4.2
pkgrel=4
pkgdesc="The TunePimp library is a development library to create MusicBrainz enabled tagging applications."
url="http://musicbrainz.org/products/tunepimp/"
depends=('libmusicbrainz' 'libmad' 'flac' 'libvorbis' 'libid3tag' 'zlib' \
	'readline' 'taglib' 'faad2' 'termcap')
makedepends=('python')
conflicts=('trm')
replaces=('trm')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download.html|grep 'Source D'|sed 's/.*) \([^ ]*\) .*/\1/;q'"
source=(http://ftp.musicbrainz.org/pub/musicbrainz/$pkgname-$pkgver.tar.gz \
	libtunepimp-0.4.2-lookuptools.cpp-fix-buffer-overflow.diff \
	taglib-detection-fix.patch)
sha1sums=('deb7ac22e451b7512006e6f090333e14d4cbc78f' \
	  '7aacc6f90411d9ed8a233e2eabd9f9ba6f77c3d3' \
	  'bff9520282787fbad47ac07568900e9d5ccc5abe')

build() {
	Fbuild
	# Python bindings install
	cd python/ || Fdie
	python setup.py build || Fdie
	Fmakeinstall
}

# optimization OK
