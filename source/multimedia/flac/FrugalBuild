# Last Modified: Sat, 05 Mar 2005 23:33:17 +0100
# Compiling Time: ~5 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=flac
pkgver=1.1.2
pkgrel=3
pkgdesc="Free Lossless Audio Coder"
url="http://flac.sourceforge.net/"
depends=('glibc' 'libogg')
groups=('multimedia')
archs=('i686')
up2date="lynx -dump $url/download.html|grep 'full source'|sed 's/.*C \(.*\) f.*/\1/'"
source=(http://dl.sf.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('2bfc127cdda02834d0491ab531a20960')

build()
{
	Fbuild || return 1
	Fln libFLAC.so.7.0.0 /usr/lib/libFLAC.so.6
	Frm /usr/lib/xmms
}

