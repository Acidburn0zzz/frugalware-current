pkgname=flac
pkgver=1.1.1
pkgrel=1
pkgdesc="Free Lossless Audio Coder"
url="http://flac.sourceforge.net/"
depends=('glibc' 'libogg')
up2date=`lynx -dump http://flac.sourceforge.net/download.html|grep 'full source'|tr -s ' '|cut -d ' ' -f 4`
source=(http://dl.sf.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('c6ccddccf8ad344065698047c2fc7280')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
