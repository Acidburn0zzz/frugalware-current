pkgname=libao
pkgver=0.8.5
pkgrel=1
pkgdesc="A cross-platform audio library"
url="http://www.xiph.org/ao"
depends=('alsa-lib')
makedepends=('arts' 'esd')
up2date=`lynx -dump http://www.xiph.org/ao/|grep Release|sed -n -e 's/.*e \(.*\) -.*/\1/' -e '1 p'`
source=(http://www.xiph.org/ao/src/$pkgname-$pkgver.tar.gz)
md5sums=('dd72b66f5f29361411bda465470b65e2')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

