# Compiling Time: 0.2 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=bsnes
pkgver=042
pkgrel=1
pkgdesc="A newer snes emulator designed with accuracy in mind."
url="http://byuu.org/bsnes/"
depends=('qt4' 'freetype2' 'libxdmcp' 'libxtst' 'libgl' 'libxv' 'libao' 'openal>=1.7.411' 'libstdc++' 'libxdamage' 'libxml2' 'sdl')
groups=('games-extra')
archs=('i686' 'x86_64')
Fpkgversep=_v
up2date="Flasttar $url"
source=(http://kuro-hitsuji.net/~byuusan/${pkgname}_v$pkgver.tar.bz2)
_F_desktop_icon="$pkgname"
_F_desktop_categories="Game;Emulator;"
_F_cd_path="src"
options=('scriptlet')
sha1sums=('0a4675e7e7c442c79b5381467650983df66f3434')

build()
{
	# disable pulseaudio support since we don't have that package
	Fsed "audio.pulseaudio" "" Makefile
	make platform=x compiler=gcc enable_gzip=true enable_jma=true || Fdie
	Fexe /usr/bin/$pkgname
	Ficon src/data/$pkgname.png
	Fdesktop2
}
