depends=('sdl>=1.2.15-3' 'xz>=5.2.2-4' 'lzo>=2.09-4' 'libpng>=1.6.20' 'fontconfig>=2.11.94-3' 'icu4c>=58.2' 'libtimidity>=0.1.0-2')
makedepends=('catcodec' 'grfcodec')
