pkgname=zsdx
pkgver=1.2
pkgrel=1
pkgdesc="An open-source Zelda-like 2D game engine. Includes the game quest zsdx."
url="http://www.zelda-solarus.com/"
depends=('lua' 'sdlimage' 'sdl_ttf' 'physfs' 'openal' 'libvorbis' 'libmodplug')
makedepends=('cmake' 'zip')
groups=('games-extra')
archs=('i686' 'x86_64')
_F_cmake_confopts="DEFAULT_QUEST=/usr/share/solarus/zsdx"
Finclude cmake
up2date=$pkgver
source=($url/downloads/$pkgname/$pkgname-$pkgver-src.tar.gz)
sha1sums=('0808c7f5545f763cd22498d755834f9793ae818d')

# optimization OK
