pkgname=smc
pkgver=1.5
pkgrel=1
pkgdesc="Secret Maryo Chronicles"
_F_sourceforge_ext=".tar.bz2"
_F_sourceforge_dirname="smclone"
Finclude sourceforge
url="http://www.secretmaryo.org/"
depends=('sdlimage' 'sdl_ttf' 'sdl_gfx>=2.0.16' 'sdl_mixer' 'cegui>=0.5.0b-3' 'libboost-mt>=1.35.0' 'freeglut' 'sdl')
rodepends=('smc-music')
makedepends=('boost>=1.35.0')
groups=('games-extra')
archs=('i686' 'x86_64')
sha1sums=('ee2abe6ff07c479f38ed6953538a1de946762b94')

_F_desktop_name="Secret Maryo Chronicles"
_F_desktop_icon="/usr/share/smc/icon/window_32.png"
_F_desktop_categories="Game;ArcadeGame;KidsGame;"

build()
{
	Fcd
	Fsed 'boost_filesystem' 'boost_filesystem-mt' configure.ac
	./autogen.sh || Fdie
	Fmake
	Fmakeinstall
  	Fdesktop2
}

# optimization OK
