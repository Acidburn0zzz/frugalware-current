pkgname=wormux
pkgver=0.8.1
pkgrel=2
pkgdesc="Wormux is free software clone of the Worms(R) series of games, developed by Team17."
url="http://www.wormux.org/"
depends=('sdl_net>=1.2.7' 'openssl' 'curl>=7.19.0' 'sdl_ttf>=2.0.9' 'sdl_gfx>=2.0.16' 'sdl_mixer>=1.2' 'sdlimage>=1.2' 'libxml++>=2.6')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://download.gna.org/$pkgname/"
source=(http://download.gna.org/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('b5a9b22b382272a7d8b262c67718bbfccd8c9129')

build()
{
	Fcd
	Fsed '-Werror' '' src/Makefile*
	Fbuild
}

# optimization OK
