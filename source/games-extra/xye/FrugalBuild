pkgname=xye
pkgver=0.12.0
pkgrel=1
pkgdesc="Puzzle game in which the objective is to help a character that looks like a green circle to get all the gems in the room."
depends=('sdlimage' 'sdl_ttf')
groups=('games-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
sha1sums=('23c9017733ca7ed7d1f446c7dad1ccce689363c6')

_F_desktop_name="Xye"
_F_desktop_icon="$pkgname.svg"
_F_desktop_categories="Game"

build() {
	Fbuild
	Ficonrel $pkgname.svg
	Fdesktop2
}
