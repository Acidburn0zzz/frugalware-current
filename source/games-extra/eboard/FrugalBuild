# Compiling Time: 0.24 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=eboard
pkgver=1.0.0
pkgrel=1
pkgdesc="eboard is a chess board interface for ICS (Internet Chess Servers) and chess engines."
license="GPL2"
url="http://eboard.sourceforge.net/"
depends=('gnuchess' 'gnuchess-book' 'gtk+2' 'libstdc++')
groups=('games-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
source=(${source[@]} destdir-impl.patch)
sha1sums=('2e9507a73802edc46808171693c5eb89c0bf521d' \
	  '2d3c33f9f085bb443d529ea5c3ea324549e3ce1b')

build() {
    Fcd
    Fpatchall
    Fsed "-O6" "-O2" configure
    Fsed "DSTDIR" "$Fdestdir" configure
    ./configure --prefix=/usr || Fdie
    make || Fdie
    make install || Fdie
}
