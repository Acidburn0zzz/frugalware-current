# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=fortune-mod-misfits
pkgver=0.1
pkgrel=1
pkgdesc="Misfits (UK) Series on E4 fortune cookie file"
url="http://fortunemod.tehspork.com"
depends=('fortune-mod')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/$pkgname/index.html"
source=($url/$pkgname/$pkgname-$pkgver.tar.xz)
sha1sums=('7fe48c0d9ddb0683fc0d4e53b98bd2155c646299')

build() {
  Fcd "./"
  strfile misfits misfits.dat  || Fdie
  Fmkdir usr/share/fortune/
  Finstallrel 644 misfits usr/share/fortune/
  Finstallrel 644 misfits.dat usr/share/fortune/
}
