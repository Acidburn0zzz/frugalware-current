# Compiling Time: 0.10 SBU
# Maintainer: kikadf <kikadf.01@gmail.com>
# Contributor: Marius Cirsta <mcirsta@frugalware.org>

options+=('asneeded')

pkgname=openra
pkgver=20130915
pkgrel=1
pkgdesc="An open-source implementation of the Red Alert engine using .NET/mono and OpenGL"
url="http://openra.res0l.net/"
depends=('mono' 'openal' 'mesa' 'freetype2' 'sdl' 'libgdiplus' 'freefont-ttf' 'geoip')
makedepends=('unzip')
_F_github_author="OpenRA"
_F_github_name="OpenRA"
_F_github_tag="yes"
_F_github_ver="release-$pkgver"
Finclude github
options=('nostrip')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="$up2date | sed 's/release_//'"
source=($source \
        https://github.com/OpenRA/OpenRA/pull/3837.patch \
        https://github.com/OpenRA/OpenRA/pull/3842.patch)
sha1sums=('3259e8a0932639b30075b2d3b0ddc631b960a609' \
          '93813743e8c23efb46527e9dabd2fbb5461a2d37' \
          'a673e43bca28bc343161f36d76ef15067ecef916')

build()
{
	Funpack_github
	for i in `ls -d */`; do
		_F_cd_path="$i"
	done
	Fsed "prefix ?= /usr/local" "prefix ?= /usr" Makefile
	Fsed "{VERSION}" "$pkgver" packaging/linux/openra.desktop
	Fsed "{DEV_VERSION}" "release-$pkgver" mods/{ra,cnc,d2k}/mod.yaml

	# Fpatchall doesn't work -> replace Fbuild
        patch -Np1 < $Fsrcdir/3837.patch || Fdie
        patch -Np1 < $Fsrcdir/3842.patch || Fdie
        make || Fdie 
	Fmakeinstall
	
	Ficon $_F_cd_path/packaging/linux/hicolor/128x128/apps/openra.png
	Fmkdir usr/share/applications
	Ffilerel packaging/linux/openra.desktop usr/share/applications/
}

