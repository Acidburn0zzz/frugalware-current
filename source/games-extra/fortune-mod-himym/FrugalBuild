# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=fortune-mod-himym
pkgver=0.2
pkgrel=1
pkgdesc="How I Met Your Mother fortune cookies"
url="http://m-redd.com/mod/"
depends=('fortune-mod')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=(http://m-redd.com/mod/$pkgname-$pkgver.tar.gz)
sha1sums=('873ea43e79bbb1eb0575e5efba709aad04698c9c')

build() {
  Fcd
  Fmkdir usr/share/fortune
  Finstallrel 644 HIMYM usr/share/fortune
  Finstallrel 644 HIMYM.dat usr/share/fortune
}
