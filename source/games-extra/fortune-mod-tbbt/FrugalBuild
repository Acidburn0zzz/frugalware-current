# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=fortune-mod-tbbt
pkgver=0.1
pkgrel=1
pkgdesc="The Big Bang Theory fortune cookies"
url="http://m-redd.com/mod/"
depends=('fortune-mod')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=(http://m-redd.com/mod/$pkgname-$pkgver.tar.gz)
sha1sums=('0096aa2866543500e976277e10d18388642e84de')

build() {
  Fcd
  Fmkdir usr/share/fortune
  Finstallrel 644 tbbt usr/share/fortune
  Finstallrel 644 tbbt.dat usr/share/fortune
}
