pkgname=lincity-ng
pkgver=1.1.0
pkgrel=1
pkgdesc="A City Simulation Game. It is a polished and improved version of the classic LinCity game."
_F_berlios_ext=".tar.bz2"
Finclude berlios
url="http://lincity-ng.berlios.de/wiki/index.php/Main_Page"
license="GPL"
depends=('physfs=1.0.1' 'sdl' 'sdl_mixer' 'sdl_gfx' 'sdl_ttf' 'sdlimage' 'libxml2' 'pkgconfig' 'alsa-lib' 'audiofile')
makedepends=('jam')
groups=('games-extra')
archs=('i686')
sha1sums=('9d75d9a042c31f0ddbf605499c9e48f26d9a94ad')

build()
{
	Fcd
	Fconf --with-libSDL_image=/usr/
	jam || return 1
	jam -sDESTDIR=$Fdestdir install
}

# optimization OK


