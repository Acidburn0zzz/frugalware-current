# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=tennix
pkgver=1.0
pkgrel=1
pkgdesc="An SDL port of a simple two-player tennis game."
url="http://icculus.org/tennix/"
depends=('sdl_mixer' 'sdlimage' 'sdl_ttf')
makedepends=('')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
Finclude gnome-scriptlet
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($url/downloads/tennix-$pkgver.tar.gz)
sha1sums=('7d5798b7cda76c45c8b3094725dead1062a6c5f6')

build()
{
   Fsed 'usr/local' 'usr' makefile
   USE_PYTHON=0 Fbuild
   Fbuild_gnome_scriptlet
}

# optimization OK
