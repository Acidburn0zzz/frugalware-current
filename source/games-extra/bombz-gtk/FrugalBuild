pkgrel=1
pkgdesc="A Minesweeper-like game using the GTK-- toolkit."
depends=('gtkmm' 'libstdc++' 'libxau' 'libxdmcp' 'libxml2' 'freetype2' 'libxdamage' 'libxext')
options=('scriptlet')
_F_googlecode_ext=".tar.bz2"
Finclude googlecode
groups=('games-extra')
archs=('i686' 'x86_64')
_F_cd_path="$pkgname"
sha1sums=('81e5af4b17bc8d57df0efa4d7d54abf8705c2e32')

_F_desktop_icon="/usr/share/bombz-gtk/logo.png"
_F_desktop_categories="Game;"

build() {
	Fbuild
	Fdesktop2
}

