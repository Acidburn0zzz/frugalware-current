# Compiling Time: 0.10 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=maxr
pkgver=0.2.3
pkgrel=1
pkgdesc="OpenSource reimplementation for M.A.X."
url="http://www.maxthegame.de/"
depends=('sdl_net' 'sdl_mixer' 'libstdc++')
groups=('games-extra')
archs=('i686')
up2date="lynx -dump http://www.maxthegame.de/bbs/docs.php?id=3 | grep tar.gz | Flasttar"
source=(http://www.maxthegame.de/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('783d5978c5cf32aa3629be8972116444564d23c2')

_F_desktop_name="M.A.X. Reloaded"
_F_desktop_icon="/usr/share/maxr/maxr.png"
_F_desktop_categories="Game;"

build() {
	Fcd
	./bootstrap.sh || Fdie
	Fconf
	Fmake
	make DATADIR=$Fdestdir/usr/share/$pkgname install || Fdie
	Fwrapper "cd /usr/share/maxr/ && ./maxr" $pkgname
	Fdesktop2
}


# optimization OK

