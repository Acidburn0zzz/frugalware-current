# Compiling Time: 0.01 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=viruskiller
pkgver=1.0
pkgrel=2
url="http://www.parallelrealities.co.uk/projects/virusKiller.php"
pkgdesc="Destroy the viruses from security holes in Windows"
depends=('sdl' 'sdlimage' 'sdl_mixer' 'sdl_ttf' 'zlib')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.parallelrealities.co.uk/projects/virusKiller.php | grep -m1 '.tar.gz' | sed 's/-[0-9]\.tar\.gz.*//' | sed 's/.*viruskiller-//'"
source=(http://archive.ubuntu.com/ubuntu/pool/universe/v/$pkgname/${pkgname}_$pkgver-1.dfsg.1.orig.tar.gz)

build() {
	Fcd
	Fbuild
	Fmv /usr/games /usr/bin
	Fmkdir /usr/share/applications
	Fmv /usr/share/gnome/apps/Games/viruskiller.desktop /usr/share/applications/
	Frm /usr/share/gnome
	Frm /usr/share/applnk
}

sha1sums=('94ed54775d00ac97ff1336457bd8a8cebdc85f22')
# optimization OK
