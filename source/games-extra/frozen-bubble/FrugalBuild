# Compiling Time: 0.04 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>
# Old Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=frozen-bubble
pkgver=2.0.0
pkgrel=1
pkgdesc="Full-featured, colorful animated penguin eyecandy"
url="http://www.frozen-bubble.org/"
license="GPL2"
up2date="lynx -dump $url/downloads/ | grep -m 1 tarball | cut -d ' ' -f 10 | cut -d '-' -f 3 | sed 's|.tar.bz2||'"
source=(http://www.frozen-bubble.org/data/$pkgname-$pkgver.tar.bz2 $pkgname.desktop)
groups=('games-extra')
archs=('i686' 'x86_64')
depends=('perl-sdl' 'libgl' 'mesa' 'sdl_pango>=0.1.2-2')
makedepends=('pkgconfig')
sha1sums=('f5b8e6e39494fe189615089cc9903dd5e0c8c292' \
	  '510a01b2bad0b69ed383569e967bb10b53909f97')

build()
{
	Fsed '/usr/local' '/usr' Makefile
	Fsed '/usr/local' '/usr' server/Makefile
	Fsed '/usr/local' '/usr' po/Makefile
	Fbuild
	Frm /usr/lib/perl5/?.?.?
	for i in $Fdestdir/usr/lib/perl5/site_perl/?.?.? ; do
		if [ -d $i ] ; then
			mv $i $Fdestdir/usr/lib/perl5/site_perl/current || return 1
		fi
	done
	find $Fdestdir/usr/lib/perl5/site_perl/current -name .packlist -exec rm {} \;
	Fmkdir /usr/share/applications /usr/share/pixmaps
	Ffile $pkgname.desktop /usr/share/applications/
	Ffilerel icons/$pkgname-icon-48x48.png /usr/share/pixmaps/$pkgname.png
}

# optimization OK - noarch
