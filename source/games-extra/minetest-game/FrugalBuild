# Compiling Time: 0 SBU
# Maintainer: PacMiam <PacMiam@gmx.fr>

pkgname=minetest-game
pkgver=0.4.7
pkgrel=1
pkgdesc="The main game for the Minetest game engine"
url="http://minetest.net/"

depends=('minetest')
groups=('games-extra')
archs=('i686' 'x86_64')

up2date="lynx -dump https://github.com/minetest/minetest_game/releases | \
    grep '.* https.*.tar.gz' | sed 's/.*https.*archive\///' | \
    sed 's/.tar.gz//'"
source=(https://github.com/minetest/minetest-game/archive/0.4.7.tar.gz)
sha1sums=('36d4daa05b3db07d454eeff42ab2be41e7d958ec')

build() {
    Fmkdir usr/share/minetest/games/
    Fcp minetest_game-$pkgver /usr/share/minetest/games/minetest
}

# optimization OK
