# Compiling Time: 0.07 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=tuxtyping
pkgver=1.5.3
pkgrel=1
pkgdesc="TuxTyping is an educational typing tutorial game for children."
_F_desktop_name="Tux Typing"
_F_desktop_icon="tuxtype2.png"
_F_desktop_categories="Game;"
_F_sourceforge_name="tuxtype"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
url="http://tuxtype.sourceforge.net/"
license="GPL"
depends=('sdl' 'sdlimage' 'sdl_mixer' 'sdl_ttf')
groups=('games-extra')
archs=('i686')
source=(${source/tuxtype-/tuxtype2-} magyar.tar.bz2)
_F_cd_path="tuxtype2-$pkgver"
sha1sums=('f1b6e48ebb6622d089685cf5e99e8de3c3200e17'\
          '441511a3a07c90a6c3493d0959b6d0a2f79b97ac')

build()
{
	Fbuild
	Fmv /usr/bin/tuxtype2 /usr/bin/tuxtyping

	# Install hungarian localization
	Fcpr magyar /usr/share/tuxtype2/data/themes/

	# Icon
	Fmkdir /usr/share/pixmaps
	Fcp /usr/share/tuxtype2/tuxtype2.ico /usr/share/pixmaps/tuxtype2.png
	Fdesktop2
}
