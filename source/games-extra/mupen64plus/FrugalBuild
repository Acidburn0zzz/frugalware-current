pkgname=mupen64plus
pkgver=1.99.5
pkgrel=1
pkgdesc="Nintendo64 Emulator"
depends=('freetype2' 'sdl' 'mesa' 'gtk+2>=2.20.1' 'libxau' 'libxdmcp' 'libstdc++' 'libxml2>=2.7.8' 'sdl_ttf')
_F_googlecode_ext=".tar.gz"
_F_googlecode_name="$pkgname-bundle-src"
_F_googlecode_dirname="$pkgname"
Finclude googlecode
_F_cd_path="$pkgname-bundle-src-$pkgver"
options=('scriptlet')
groups=('games-extra')
archs=('i686' 'x86_64')
sha1sums=('ca80ae446c9591e272e3ec93f0a2a8b01cfcd34e')

build() {
  Fcd

  sh m64p_build.sh
  sh m64p_install.sh PREFIX=$Fdestdir/usr
}

# optimization OK
