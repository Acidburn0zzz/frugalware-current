# Compiling Time: 0.06 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=tintin
pkgver=1.98.2
pkgrel=1
pkgdesc="a console mud client from which other mud clients have been written"
Finclude sourceforge
depends=('zlib')
groups=('games-extra')
archs=('i686' 'x86_64')
sha1sums=('44118c3ca0b9513908b10121f15ec5f305bc16a3')

build()
{
	Fcd tt/src
	Fmake CC="gcc $CFLAGS"
	Fexerel /usr/bin/tt++
	cd ..  || Fdie
	Fdocrel README
	Fdocrel FAQ
	cd docs || Fdie
	Fdocrel tintin19.txt
	Fdocrel chat_protocol.txt
}

# optimization OK
