# Compiling Time: 0.06 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=tintin
pkgver=1.99.6
pkgrel=1
pkgdesc="A console mud client from which other mud clients have been written."
_F_sourceforge_realname="TinTin++ Source Code"
Finclude sourceforge
depends=('zlib')
groups=('games-extra')
archs=('i686' 'x86_64')
sha1sums=('95b89aab34ac6cb2e8a05e2b3723f350c1462ed3')

build()
{
	Fcd tt/src
	chmod +x configure || Fdie
	Fconf --enable-big5
	make || Fdie
	Fexerel /usr/bin/tt++
	Fdocrel ../docs/{tintin19,chat_protocol}.txt
}

# optimization OK
