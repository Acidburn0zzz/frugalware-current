# Compiling Time: 0.06 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=tintin
pkgver=1.98.3
pkgrel=1
pkgdesc="A console mud client from which other mud clients have been written."
Finclude sourceforge
depends=('zlib')
groups=('games-extra')
archs=('i686' 'x86_64')
sha1sums=('7d9ca9404db9bcf1beaf55c29ae356cf6b2baecf')

build()
{
	Fcd tt/src
	Fconf --enable-big5
	# properly implement $CFLAGS
	Fsed "\$(DEFINES)" "\$(DEFINES) ${CFLAGS}" Makefile
	make || Fdie
	Fexerel /usr/bin/tt++
	Fdocrel ../docs/{tintin19,chat_protocol}.txt
}

# optimization OK
