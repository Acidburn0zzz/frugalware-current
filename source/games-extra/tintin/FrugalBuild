# Compiling Time: 0.06 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=tintin
pkgver=1.98.4
pkgrel=1
pkgdesc="A console mud client from which other mud clients have been written."
Finclude sourceforge
depends=('zlib')
groups=('games-extra')
archs=('i686' 'x86_64')
sha1sums=('6b4776cd350a617360da43a63754f1146e11ed43')

build()
{
	Fcd tt/src
	Fconf --enable-big5
	make || Fdie
	Fexerel /usr/bin/tt++
	Fdocrel ../docs/{tintin19,chat_protocol}.txt
}

# optimization OK
