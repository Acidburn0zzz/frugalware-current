pkgname=tintin
pkgver=2.00.5
pkgrel=1
pkgdesc="A console mud client from which other mud clients have been written."
depends=('zlib')
groups=('games-extra')
archs=('i686' 'x86_64' 'ppc')
Finclude sourceforge
sha1sums=('757f28f882cf4103cf02be0a0874144d1cc10830')
_F_cd_path="tt/src"

build()
{
	Fmake --enable-big5
	Fexerel /usr/bin/tt++
	Fdocrel ../{docs,mods}/*
}

# optimization OK
