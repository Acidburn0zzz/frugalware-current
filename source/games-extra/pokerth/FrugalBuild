# Compiling Time: 1.24 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=pokerth
pkgver=0.7.1
pkgrel=1
pkgdesc="Poker game written in C++/QT4"
_F_sourceforge_name="PokerTH"
_F_sourceforge_dirname="$pkgname"
_F_sourceforge_ext="-src.tar.bz2"
Finclude sourceforge
url="http://www.pokerth.net/index.php"
depends=('libboost-mt' 'sdl_mixer' 'curl' 'gnutls' 'libgcrypt' 'libqtgui' 'libice' 'libxrender' 'libxext' 'util-linux-ng')
makedepends=('boost')
groups=('games-extra')
archs=('i686')
sha1sums=('9c0c546355d7d248aeeee371d0354bfe90150a7b')

build()
{
	Fcd "$_F_sourceforge_name-$pkgver-src"
	qmake pokerth.pro
	Fmake
	Fmakeinstall INSTALL_ROOT=$Fdestdir
	Fexerel $pkgname usr/bin/$pkgname
	Fdocrel data/data-copyright.txt
	Frm usr/share/pokerth/data/data-copyright.txt
	Fmanrel docs/${pkgname}.1
}
