pkgname=picpuz
pkgver=2.1.1
pkgrel=1
pkgdesc="A free Linux jigsaw puzzle program"
url="http://kornelix.squarespace.com"
depends=('gtk+2>=2.16.2-2')
_F_gnome_iconcache="y"
options=('scriptlet')
Finclude gnome-scriptlet
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/downloads/"
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz instal.diff)
sha1sums=('3a5346f0c8decbefb697577b7881489d4c871cf4' \
          '04090326bd0e246261d3e7e120187abbccf095fd')

_F_desktop_icon="/usr/share/$pkgname/icons/$pkgname.png"
_F_desktop_categories="Game;LogicGame;"

build()
{
	Fcd
	Fbuild
	Fdesktop2
}
