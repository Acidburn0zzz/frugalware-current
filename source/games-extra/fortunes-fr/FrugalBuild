pkgname=fortunes-fr
pkgver=0.02
pkgrel=1
pkgdesc="Collection of French fortune cookie files"
url="http://www.fortunes-fr.org"
depends=('fortune-mod')
groups=('games-extra')
archs=('i686')
up2date="lynx -dump $url |  Flasttar"
source=(http://www.fortunes-fr.org/$pkgname/$pkgname-$pkgver.tar.gz)
Fconfopts="${Fconfopts[@]} --with-fortunesdir=/usr/share/fortune/fr"
sha1sums=('5816867a4200053a6a3dafe9b76d444fae74c6eb')