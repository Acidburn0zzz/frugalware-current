pkgname=torcs
pkgver=1.3.0
pkgrel=1
pkgdesc="The Open Racing Car Simulator"
depends=('mesa' 'plib' 'libpng' 'freeglut' 'libxrandr' 'openal' 'freealut')
makedepends=('randrproto')
groups=('games-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
source=(${source[@]} torcs-1.3.0-xorg7.diff)

build()
{
	unset MAKEFLAGS
	Fpatchall
	autoconf || return 1
	Fmake
	Fmakeinstall datainstall
}

# optimization OK

sha1sums=('02aa1f7e17ca92eb41a60879a765a8793f1676ee' \
	  'cbd435b2a1ac131f85c01e3590e286c49f47024d')
