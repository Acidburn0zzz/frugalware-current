pkgname=torcs
pkgver=1.2.4
pkgrel=4
pkgdesc="The Open Racing Car Simulator"
depends=('mesa' 'plib' 'libpng' 'freeglut' 'libxrandr' 'openal' 'freealut')
makedepends=('randrproto')
groups=('games-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
source=(${source[@]} $pkgname-$pkgver-{xorg7,gcc41}.diff)
sha1sums=('358786ec58c38739c1f78dd5dd1764cb9fa6a481' \
	  '9a5fbf1767913efd4cd828afa661b2fe689ebf74' \
	  'd79f06f290f4e09dc16b162f8798e90f6a1d3c09')

build()
{
	unset MAKEFLAGS
	Fpatchall
	autoconf || return 1
	Fmake
	Fmakeinstall datainstall
}

# optimization OK
