# Compiling Time: 0.03 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=glest-data
pkgver=2.0.1
pkgrel=1
pkgdesc="glest is a 3D realtime strategy game (data package)"
_F_sourceforge_ext=".zip"
_F_sourceforge_name="glest"
Finclude sourceforge
url="http://www.glest.org/"
makedepends=('unzip')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/en/downloads.html | grep -m1 glest | sed 's/.*t_\(.*\).ex.*/\1/'"
source=(${source/glest-/glest_data_})
sha1sums=('5a3992135dce648c7aaa1bf6d1469f651ee670ad')

build() {
	Fmkdir usr/share/glest
	Fmessage "Copying glest data files... "
	cp -R $Fsrcdir/glest_game/*  $Fdestdir/usr/share/glest/
	Frm usr/share/glest/glest.ini
}
