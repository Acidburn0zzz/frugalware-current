# Compiling Time: 0.27 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=neverball
pkgver=1.4.0
pkgrel=2
pkgdesc="Neverball is part puzzle game, part action game, and entirely a test of skill."
url="http://neverball.org/"
depends=('sdlimage' 'sdl_ttf' 'sdl_mixer' 'libgl' 'libpng')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/download.php"
source=($url/$pkgname-$pkgver.tar.gz \
	neverball-1.4.0-cflags.diff $pkgname.png neverputt.png)
sha1sums=('630aab5b4149d6ffb781cc38c4ce26dd6b048b40' \
	  '880a4a02725b1f86d2cefc7018717a008524eb94' \
	  '148009f39e7a646f7db4c4bf8dd7b5bd3effa2bc' \
	  '1270cfbd1e736927e8d438c75e35c52ce44ace36')

build()
{
	Fpatchall
	Fmake
	Fexerel /usr/libexec/neverball
	Fexerel /usr/libexec/neverputt
	echo "/usr/libexec/neverball /usr/share/neverball" >neverball
	echo "/usr/libexec/neverputt /usr/share/neverball" >neverputt
	Fexerel /usr/bin/neverball
	Fexerel /usr/bin/neverputt
	Fmkdir /usr/share/
	cp -r data $Fdestdir/usr/share/neverball
	chmod -R a+r $Fdestdir/usr/share/neverball

	_F_desktop_filename="$pkgname"
	_F_desktop_name="Neverball"
	_F_desktop_desc="A 3D arcade game with a ball"
	_F_desktop_icon="$pkgname.png"
	_F_desktop_categories="Game;ArcadeGame;"
	Fdesktop2

	_F_desktop_filename="neverputt"
	_F_desktop_name="Neverputt"
	_F_desktop_desc="A 3D mini golf game"
	_F_desktop_exec="neverputt"
	_F_desktop_icon="neverputt.png"
	_F_desktop_categories="Game;ArcadeGame;"
	Fdesktop2

	Ficon $pkgname.png
	Ficon neverputt.png
}

# optimization OK
