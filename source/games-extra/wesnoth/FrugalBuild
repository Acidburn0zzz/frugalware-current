# Compiling time: 2.1 SBU
# Maintainer: krix <krics@linuxforum.hu>

pkgname=wesnoth
pkgver=1.2.1
pkgrel=1
pkgdesc="Wesnoth is a turn based strategy game played in the fantasy world"
url="http://www.wesnoth.org/"
depends=('sdl' 'sdlimage' 'sdl_net' 'sdl_mixer' 'libpng' 'libjpeg' 'libogg' \
	'vorbis-tools' 'freetype2')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep stable|sed 's/.* \([^ ]*\) (.*/\1/;q'"
source=(http://www.wesnoth.org/files/$pkgname-$pkgver.tar.gz)
Fconfopts="$Fconfopts --enable-server --enable-editor --enable-tools \
		--enable-campaing-server --with-kde --with-gnome \
		--with-fifodir=/var/run/wesnothd"
# optimization OK
sha1sums=('dd3a330cd7d908cd7e2f556deb7e25e1b45ecc0d')
