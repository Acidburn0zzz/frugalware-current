pkgname=gcompris
pkgver=8.4.2
pkgrel=1
pkgdesc="Educational application for children"
depends=('pygtk' 'gnet' 'python' 'gnucap' 'gstreamer' 'sdl_mixer' 'gnuchess' \
	'pysqlite2' 'libxml2' 'sdl' 'gtk+2' 'libxxf86vm' 'libxdamage' 'sqlite3' \
	'tuxpaint' 'pyxml')
## need to figure gst-*
rodepends=('gst-plugins-base-alsa' 'gst-plugins-base-ogg') 
makedepends=('perl-xml' 'intltool' 'texi2html' 'gettext' 'libgnomecanvas' 'subversion') # lol
groups=('games-extra')
archs=('i686')
Finclude sourceforge
url="http://gcompris.net/"
options=('scriptlet')
sha1sums=('7040ec1b1e95761c96c9bf21e55040c6cb8d70c0')

build()
{
	Fcd
	cat /usr/share/gettext/config.rpath >config.rpath || Fdie
	Fautoreconf
	Fconf --enable-gnet
	make || Fdie
	make check || Fdie
	make update-voices || Fdie
	Fmakeinstall
}

# optimization OK
