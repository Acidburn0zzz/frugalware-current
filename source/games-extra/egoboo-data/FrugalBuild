# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>
# Contributor: jedifox <j3d1f0x@free.fr>

pkgname=egoboo-data
pkgver=2.6.3b
pkgrel=2
pkgdesc="Egoboo is a working cool 3D dungeon crawling game in the spirit of nethack"
_F_sourceforge_broken_up2date="1"
_F_sourceforge_dirname="egoboo"
_F_sourceforge_name="$pkgname"
Finclude sourceforge
rodepends=('egoboo=2.6.3b')
groups=('games-extra')
archs=('i686')
source=($source egoboo.png)
sha1sums=('3fc8adc86bb98b19c479ca0476685134cf4a4747' \
          '65746f745d792bd6daf6c720a8f64f80627c1c02')
_F_desktop_name="Egoboo"
_F_desktop_categories="Game;AdventureGame;"
_F_desktop_icon="egoboo.png"
build()
{
	Fmkdir /usr/share/egoboo
	Fcd "Egoboo $pkgver"
	#remove spaces in a filename:
	mv "Egoboo $pkgver Manual.pdf" Egoboo-$pkgver-Manual.pdf || Fdie
	Fdocrel {Changelog.txt,Readme.txt,License.pdf,Egoboo-$pkgver-Manual.pdf}
	cp -a {basicdat,modules,players,setup.txt,controls.txt} $Fdestdir/usr/share/egoboo || Fdie
	Ficon egoboo.png
	Fdesktop2
}
