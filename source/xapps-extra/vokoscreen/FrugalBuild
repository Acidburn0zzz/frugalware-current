# Compiling Time: 0.46 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=vokoscreen
pkgver=2.5.0
pkgrel=4
pkgdesc="Screencasting tool for Linux"
url="http://www.kohaupt-online.de/hp/"
depends=('alsa-lib' 'v4l-utils' 'qt5-x11extras>=5.7.1' 'qt5-base>=5.7.1' 'libxrandr' 'ffmpeg>=3.2')
makedepends=('qt5-tools>=5.7.1' 'x11-protos')
archs=('x86_64')
groups=('xapps-extra')
_F_github_author="vkohaupt"
_F_github_name="$pkgname"
_F_github_tag="y"
Finclude github
sha1sums=('d435c5687144dfea1025e23ce6e50f822da6ca61')

build() {

	Fcd
	qmake-qt5 || Fdie
	make || Fdie
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
