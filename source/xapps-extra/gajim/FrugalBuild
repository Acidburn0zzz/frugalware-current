# Compiling Time: 0.03 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=gajim
pkgver=0.10.1
pkgrel=1
pkgdesc="The goal of Gajim is to provide a full featured and easy to use Jabber client."
url="http://www.gajim.org/"
depends=('pygtk>=2.6')
makedepends=('gtkspell' 'libxscrnsaver' 'intltool')
rodepends=('pysqlite2')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://www.gajim.org/downloads.php?lang=en |grep tar.bz2 |sed 's/.*-\(.*\).t.*/\1/'"
source=(http://www.gajim.org/downloads/gajim-$pkgver.tar.bz2)

build() {
	Fsed '/usr/local' '/usr' Makefile
	Fsed "OPTFLAGS.*" "OPTFLAGS = $CFLAGS" Makefile
	Fbuild
}
sha1sums=('909f197594f1d9f0ca678bd6b0b8edbb45d357af')

# optimization OK
