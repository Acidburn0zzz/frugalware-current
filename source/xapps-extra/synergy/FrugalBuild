# Compiling Time: 0.43 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=synergy
pkgver=1.3.1
pkgrel=1
pkgdesc="Synergy lets you easily share a single mouse and keyboard between multiple computers."
url="http://www.synergy2.sourceforge.net/"
depends=('xextproto' 'xproto' 'kbproto' 'inputproto' 'xineramaproto' 'libxt' 'libx11' \
	'libxinerama' 'libxext' 'libxtst')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/synergy2/?sort_by=date'|grep 'synergy-\(.*\).tar.gz$'|sort -r -n|head -n 1|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/synergy2/$pkgname-$pkgver.tar.gz)
sha1sums=('03113ec8aadfecaeba8e369b083f4fb5b44f5c62')

build() {
	Fbuild
	Fmkdir /etc
	Fcpr $pkgname-$pkgver/examples/$pkgname.conf /etc/
}

# optimization OK
