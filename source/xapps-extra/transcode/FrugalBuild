pkgname=transcode
pkgver=1.0.2
pkgrel=4
pkgdesc="A suite of command line utilities for transcoding various video, audio, and container formats."
url="http://www.transcoding.org/cgi-bin/transcode"
depends=('mjpegtools>=1.8.0-2' 'mpeg2dec' 'imagemagick' 'ffmpeg' 'libdvdread' 'libxv')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep released|sed 1q|cut -d ' ' -f12"
## broken|corrupted TMP changed to fw FTP
#source=(http://www.jakemsr.com/transcode/$pkgname-$pkgver.tar.gz)
source=(ftp://frugalware.org/pub/frugalware/frugalware-current/source/xapps-extra/transcode/$pkgname-$pkgver.tar.gz)
license="GPL"
sha1sums=('831a55a0218913e43261eb614ccca34a0d1b3d0d')

build()
{
    Fbuild --enable-lame --enable-ogg --enable-vorbis --enable-theora \
    --enable-libdv --enable-a52-default-decoder --enable-libxml2 \
    --enable-imagemagick --enable-libjpeg --enable-mjpegtools \
    --enable-sdl --enable-freetype2 --enable-a52 
}

# optimization ok
