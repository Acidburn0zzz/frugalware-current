archs=('i686' 'x86_64')
groups=('xapps-extra')
depends=('filter_audio' 'tox-core' 'qrencode' 'libxscrnsaver' 'qt5-svg' 'gdk-pixbuf2' 'gtk+2' 'sqlcipher')
makedepends=('qt5-linguist' 'x11-protos')
pkgdesc="Powerful Tox client that follows the Tox design guidelines."
_F_github_author="tux3"
_F_github_name="qTox"
_F_github_tag="y"
_F_github_tag_v="y"
Finclude github

sha1sums=('984b655da32e35a94d7cc4bd539ed6499a0f8cdb')

build() {
	Fcd
	Fexec qmake-qt5 PREFIX=$Fdestdir/usr
	Fbuild
	Fexerel /usr/bin/qtox
}


