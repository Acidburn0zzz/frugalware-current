# Compiling Time: 0.02 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>
# Contributor: James Buren <flakeroats@hotmail.com>

pkgname=icebgset
pkgver=1.3
pkgrel=1
pkgdesc="application for changing the background in icewm"
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=80316' | grep '$pkgname' | head -n1 | sed 's|.tar.bz2.*$||' | sed 's|^.*-||'"
source=(http://downloads.sourceforge.net/icecc/$pkgname-$pkgver.tar.bz2)
url="http://icecc.sourceforge.net/"
depends=('qt' 'libstdc++' 'zlib' 'libgl' 'libglx' 'libxmu' 'libxi')
rodepends=('icewm')
groups=('xapps-extra')
archs=('i686')
sha1sums=('89f7beda8a507fece845461fb8a2b40b1cfe29ea')

build()
{
	Fsed '/usr/local' '/usr' $pkgname.pro
	qmake || return 1
	Fmake
	Fmakeinstall INSTALL_ROOT=$Fdestdir
}

# optimization OK
