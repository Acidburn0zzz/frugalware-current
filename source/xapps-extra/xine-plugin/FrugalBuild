url="http://www.xinehq.de/"
depends=('xine-lib')
rodepends=('firefox')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://www.xinehq.de/index.php/releases | Flasttar"
source=(http://prdownloads.sourceforge.net/xine/$pkgname-$pkgver.tar.bz2)
Fconfopts="$Fconfopts --with-plugindir=/usr/lib/mozilla/plugins"
