pkgname=tiled
pkgver=1.0.2
pkgrel=1
pkgdesc="Tiled is a general purpose tile map editor."
depends=('zlib' 'qt5-base>=5.9.1' 'python>=2.7.12-2')
makedepends=('qt5-tools>=5.9.1' 'ca-certificates')
groups=('xapps-extra')
archs=('x86_64')
sha1sums=('e12248f27ba00ef95055960c4356d950a5d434e7')
options=('scriptlet')
_F_github_author=bjorn
_F_github_tag_v=y
Finclude github

build() {
	Fcd
	Fexec qmake-qt5 -r INSTALL_HEADERS=yes RPATH=no PREFIX=$Fdestdir/usr || Fdie
	Fbuild
}

# optimization OK
