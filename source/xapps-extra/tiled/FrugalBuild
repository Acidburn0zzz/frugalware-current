pkgname=tiled
pkgver=1.1.1
pkgrel=1
pkgdesc="Tiled is a general purpose tile map editor."
depends=('zlib' 'qt5-base>=5.10.0' 'python>=2.7.12-2')
makedepends+=('qt5-tools>=5.10.0' 'ca-certificates' 'x11-protos')
groups=('xapps-extra')
archs=('x86_64')
sha1sums=('04400364ee3cf7c1313f8435beac0691f1bf26ac')
options=('scriptlet')
_F_github_author=bjorn
_F_github_tag_v=y
Finclude github

build() {
	Fcd
	Fexec qmake-qt5 -r INSTALL_HEADERS=yes RPATH=no PREFIX=$Fdestdir/usr || Fdie
	Fbuild
}

