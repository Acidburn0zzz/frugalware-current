pkgname=tiled
pkgver=1.0.0
pkgrel=1
pkgdesc="Tiled is a general purpose tile map editor."
depends=('zlib' 'qt5-base>=5.9.0-4' 'python>=2.7.12-2')
makedepends=('qt5-tools>=5.9.0' 'ca-certificates')
groups=('xapps-extra')
archs=('x86_64')
sha1sums=('7e9d98f87628276c5d069fa5624fe9d088a7a4de')
options=('scriptlet')
_F_github_author=bjorn
_F_github_tag_v=y
Finclude github

build() {
	Fcd
	Fexec qmake-qt5 -r INSTALL_HEADERS=yes RPATH=no PREFIX=$Fdestdir/usr || Fdie
	Fbuild
}

