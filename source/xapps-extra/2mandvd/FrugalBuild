# Compiling Time: 0.16 SBU
# Maintainer: Kooda <kooda@upyum.com>

pkgname=2mandvd
pkgver=1.3.5
pkgrel=1
pkgdesc="A tool to easely make video DVDs"
url="http://2mandvd.tuxfamily.org/"
depends=('qt4>=4.6' 'libqtwebkit' 'webkit' 'ffmpegthumbnailer' 'sox' 'mplayer' 'mencoder' 'dvdauthor' 'transcode' 'mjpegtools' 'netpbm' 'cdrkit' 'xine-lib' 'perl')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://download.tuxfamily.org/2mandvd/ | sed 's|2ManDVD|2mandvd|g' | Flasttar"
source=(http://download.tuxfamily.org/$pkgname/2ManDVD-$pkgver.tar.gz)
sha1sums=('3cf6429d1b7ac35d78f7f56431208443e866d9e6')
_F_cd_path="2ManDVD"

build()
{
	Fcd
	qmake -project || Fdie
	echo "QT += webkit" >> 2ManDVD.pro || Fdie
	qmake || Fdie
	Fbuild

	# Install
	Fmkdir usr/share/2ManDVD/
	Fcprel Bibliotheque usr/share/2ManDVD/
	Fcprel Interface usr/share/2ManDVD/
	Fcprel 2ManDVD usr/share/2ManDVD/
	Fwrapper 'cd /usr/share/2ManDVD/ && ./2ManDVD' 2ManDVD
}

# optimization OK
