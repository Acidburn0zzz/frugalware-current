makedepends=('qt4-tools')
groups=('xapps-extra')
archs=('i686' 'x86_64' 'ppc')
provides=('djview')
replaces=('djview')
conflicts=('djview')
_F_sourceforge_name="djview"
_F_sourceforge_dirname="djvu"
Finclude sourceforge
_F_cd_path="djview-$pkgver"
