pkgname=djview4
pkgver=4.6
pkgrel=1
pkgdesc="DjView4 is a portable DjVu viewer and browser plugin."
depends=('djvulibre' 'libqtnetwork')
makedepends=('qt4-tools')
groups=('xapps-extra')
archs=('i686' 'x86_64' 'ppc')
provides=('djview')
replaces=('djview')
conflicts=('djview')
_F_sourceforge_dirname="djvu"
Finclude sourceforge
