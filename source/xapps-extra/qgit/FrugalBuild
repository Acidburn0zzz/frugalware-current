# Compiling Time: 0.28 SBU
# Maintainer: kikadf <kikadf.01@gmail.com>
# Contributor: crazy <crazy@frugalware.org>

options+=('asneeded')

pkgname=qgit
pkgver=20140112.ga4b334d
pkgrel=1
pkgdesc="QGit is a git GUI viewer built on Qt/C++."
url="http://digilander.libero.it/mcostalba/"
depends=('libqtgui')
rodepends=('git')
_F_scm_type="git"
_F_scm_url="git://repo.or.cz/qgit4/redivivus.git"
_F_desktop_name="QGit"
_F_desktop_icon="$pkgname.png"
_F_desktop_categories="Qt;Network;"
Finclude scm
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')

build()
{
	Funpack_scm
	qmake $pkgname.pro || Fdie
	Fmake
	Fexe $pkgname/bin/$pkgname /usr/bin/$pkgname
	Ficon $pkgname/src/resources/$pkgname.png
	Fdesktop2
}

# optimization OK
