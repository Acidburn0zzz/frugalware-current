pkgname=rawstudio
pkgver=2.0
pkgrel=3
pkgdesc="Open-source program to read and manipulate RAW images from digital cameras."
url="http://rawstudio.org"
archs=('i686' 'x86_64')
groups=('xapps-extra')
depends=('lcms' 'gtk+2' 'exiv2>=0.24' 'fftw' 'lensfun' 'flickcurl' 'curl'\
       'libgphoto2' 'gconf')
up2date="Flasttar $url/files/release/"
source=("$url/files/release/$pkgname-$pkgver.tar.gz" \
	autogen.patch \
	lensfun-version.c.patch )
sha1sums=('341e6c8a4c1c2275f32410783ba61e1c4f9bc5b2' \
          'f611d9ef07481664f325a80f349eb4b1972c2a0d' \
          '2ef8d7ad5f0c36cf838b9ddf26a8d100997c4326')

build() {
	Fcd
	Fpatchall
	Fbuild
}

# optimization OK
