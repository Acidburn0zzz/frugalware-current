pkgname=lyx
pkgver=2.1.4
pkgrel=1
pkgdesc="An advanced open-source document processor based on TeX"
url='http://www.lyx.org'
depends=('libboost>=1.60.0' 'aspell>=0.60.6.1-3' 'libqtgui>=4.8.7-2')
rodepends=('texlive')
makedepends=('boost>=1.60.0' 'x11-protos')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="Flastarchive $url/Download .tar.xz"
source=(ftp://ftp.lip6.fr/pub/lyx/stable/2.1.x/$pkgname-$pkgver.tar.xz)
sha1sums=('956662191437685789a2ffc2eec3048a21d3e37b')
_F_desktop_categories="Application;Office;"
_F_desktop_icon="/usr/share/lyx/images/lyx.png"

Fconfopts+="	--with-frontend=qt4 \
                --without-included-boost"
build()
{
	Fbuild
	Fdesktop2
}

