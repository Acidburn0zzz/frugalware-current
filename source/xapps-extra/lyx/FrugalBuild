# Compiling time: 4.15 SBU
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=lyx
pkgver=1.5.1
pkgrel=1
pkgdesc="An advanced open-source document processor based on TeX"
url='http://www.lyx.org'
depends=('qt4' 'tetex' 'python' 'perl' 'imagemagick' 'libgcc' 'aspell')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump \"ftp://ftp.lyx.org/pub/lyx/stable\" | grep \"lyx-.*.tar.bz2\" | tail -n 1 | sed \"s/.*lyx-\(.*\).tar.bz2.*/\1/\""
source=(ftp://ftp.lyx.org/pub/lyx/stable/$pkgname-$pkgver.tar.bz2)
sha1sums=('d6fab5c00afe35fdafb6104fbd74d76107438367')


build()
{
	Fbuild --with-frontend=qt4 --enable-pch --with-included-boost
	Fdesktop "$pkgname" "/usr/share/lyx/images/lyx.xpm" "Application;Office;"
}

# optimization OK
