pkgname=lyx
pkgver=2.2.1
pkgrel=1
pkgdesc="An advanced open-source document processor based on TeX"
url='http://www.lyx.org'
depends=('libboost>=1.60.0-4' 'aspell>=0.60.6.1-3' 'libqtgui>=4.8.7-5')
rodepends=('texlive')
makedepends=('boost>=1.60.0-4' 'x11-protos')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="Flastarchive $url/Download .tar.xz"
source=(ftp://ftp.lip6.fr/pub/lyx/stable/2.2.x/$pkgname-$pkgver.tar.xz)
_F_gnome_iconcache="y"
Finclude gnome-scriptlet
sha1sums=('e245219dcfe3aafb314ea482fd0c03ce8ed95eb0')
_F_desktop_categories="Application;Office;"
_F_desktop_icon="/usr/share/icons/hicolor/48x48/apps/lyx.png"

Fconfopts+="	--with-frontend=qt4 \
                --without-included-boost"
build()
{
	Fbuild
	Fdesktop2
	Fbuild_gnome_scriptlet
}

# optimization OK
