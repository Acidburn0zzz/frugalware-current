pkgname=torsmo
pkgver=0.18
pkgrel=3
pkgdesc="TyopoytaORvelo System MOnitor"
depends=('glibc' 'sed' 'grep' 'libxft' 'libxext' 'libx11' 'libxt')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="lynx -dump 'http://prdownloads.sourceforge.net/torsmo/?sort_by=date&sort=desc'|grep .tar.gz$|sed -ne 's/.*o-\(.*\)\.t.*/\1/;1 p'"
source=(${source[@]} http://dev.gentoo.org/~spock/stuff/torsmo-0.18-hddtemp-goto.patch)
sha1sums=('01e6737b3971daa3a7c9cb6dd1961f61bc39bdae' \
	'ee70c0e5fbd95071ecdbd1cb6e48c7f9d2a1b8cc')

build () {
	Fpatchall
	Fautoconfize
	Fmake --enable-xft \
		--enable-proc-uptime \
		--enable-seti \
		--x-includes=/usr/include \
		--x-libraries=/usr/lib
	Fmakeinstall
}

# optimalization OK
