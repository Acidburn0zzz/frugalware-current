# Compiling Time: 1.52 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=qupzilla
pkgver=1.0.0
pkgrel=1
pkgdesc="Web browser written in Qt."
url="http://www.qupzilla.co.cc"
depends=('libqtwebkit' 'libqtscript' 'libqtsql' 'bzip2')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://qt-apps.org/content/show.php?content=145693 | sed -n 's/^v\([0-9.]*\)/\1/p'"
source=(https://github.com/nowrep/QupZilla/tarball/master/nowrep-${pkgname}v${pkgver}-final-0-gae19893.tar.gz)
sha1sums=('6de2900171575442b444326aaef0074a1e153972')

build() {
	Fcd nowrep-QupZilla-e05b623/src
	qmake QupZilla.pro || Fdie
	Fmake
	Fmakeinstall INSTALL_ROOT=$Fdestdir
}
