# Compiling Time: 1.52 SBU
# Maintainer: Melko <melko@frugalware.org>

options+=('asneeded')

pkgname=qupzilla
pkgver=1.4.4
pkgrel=1
pkgdesc="Web browser written in Qt."
url="http://www.qupzilla.co.cc"
depends=('libqtwebkit' 'libqtscript' 'libqtsql' 'bzip2')
makedepends=('qt4-linguist')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_gnome_iconcache='y'
_F_github_author="QupZilla"
_F_github_tag="1"
_F_github_ver="v$pkgver"
Finclude gnome-scriptlet github
Fpkgversep="/v"
sha1sums=('3809fb5e55f5404c3688a50dfb0cacded55391cb')

build() {
	export KDE="true"
	Funpack_github
	Fcd $pkgname-$pkgver
	qmake QupZilla.pro || Fdie
	Fmake
	Fmakeinstall INSTALL_ROOT=$Fdestdir
	Fbuild_gnome_scriptlet
}

# optimization OK
