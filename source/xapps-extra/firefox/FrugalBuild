# Compiling time: 46.35 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=firefox
pkgver=56.0.1
pathver=${pkgver} # version used in path names
pkgrel=1
pkgdesc="Mozilla Firefox web browser"
url="http://www.mozilla.org/products/firefox/"
depends=('libevent' 'hunspell>=1.6.1' 'libidl' 'desktop-file-utils' 'nss>=3.29.5' 'jemalloc' \
	'dbus-glib' 'curl>=7.50.3-2' 'nspr>=4.9.2' 'lcms' 'libxau>=1.0.4' 'libxdmcp' 'libxft>=2.1.13-2' \
	'libxt' 'libstdc++>=6.2.1-5' 'libxdamage' 'libice' 'bzip2' 'alsa-lib' 'wireless_tools' 'cairo' 'sqlite3>=3.8.7.4' \
	'startup-notification' 'libvpx>=1.6.0' 'libpulse>=9.0-2' 'gtk+2' 'ffmpeg>=3.3.2'  'lcms2' 'gtk+3>=3.22.4' 'icu4c>=58.1-3')
makedepends=('zip' 'yasm' 'x11-protos' 'autoconf213' 'rust' 'cargo' 'clang')
groups=('xapps-extra')
archs=('x86_64')
_F_archive_grepv="b[0-9]"
up2date="Flastverdir http://ftp.mozilla.org/pub/firefox/releases/"
source=(http://ftp.mozilla.org/pub/$pkgname/releases/$pkgver/source/$pkgname-$pathver.source.tar.xz \
	ffremote \
	$pkgname.desktop \
	prefs.js \
	mozconfig \
	ff-no-version.patch)
sha1sums=('a8409d1c2dd129dbd53d5e0745e55a899b55ecd0' \
          'a797c04d67d343d068c108b804883a7815f3197b' \
          'ff757068926b86e0c5ed82a0683fa645623c01d6' \
          'e6789ad3634f43a8986ef35fe1876d4cde6a2e15' \
          'da95212fe979e1e01e8db5ce5f8fcb2d8d937bfa' \
          '104394fe469f67786c929ff7cc7b01d6989a2968')


options+=('scriptlet')


build() {

	Fcd

	## FIXME gcc6
	CXXFLAGS+=" -fno-delete-null-pointer-checks -fno-strict-aliasing -fno-lifetime-dse -Wno-deprecated -Wno-deprecated-declarations"
	CFLAGS+=" -fno-delete-null-pointer-checks -fno-strict-aliasing -fno-lifetime-dse -Wno-deprecated -Wno-deprecated-declarations"

	# Autodetect language.
	sed -i '/intl.locale.matchOS/s/false/true/' modules/libpref/init/all.js || Fdie

	cp "$Fsrcdir/mozconfig" .mozconfig || Fdie


	export MOZILLA_OFFICIAL=1
	export BUILD_OFFICIAL=1
	export PATH="$Fsrcdir/path:$PATH"

	Fpatchall
	## these MOZ_*_OPTIMIZE_FLAGS are set by default to -Os/-O3 ...
	make  -f client.mk build  MOZ_MAKE_FLAGS="$MAKEFLAGS" MOZ_OPTIMIZE_FLAGS="$CXXFLAGS" MOZ_PGO_OPTIMIZE_FLAGS="$CXXFLAGS" || Fdie

        make  -f client.mk DESTDIR="$Fdestdir" install || Fdie

	# correction for broken ff symlink
	Frm /usr/bin/firefox
	Fln /usr/lib/firefox/firefox /usr/bin/firefox

	# remove ff-devel dir
	Frm /usr/lib/firefox-devel

	#temporary hack to remove some nss headers conflicting with system nss
	Frm usr/include/firefox/nss

	# Install ffremote.
	Fexe /usr/bin/ffremote

	## icons
	local i

	for i in 16 22 24 32 48 256; do
		Finstallrel 644 browser/branding/official/default${i}.png usr/share/icons/hicolor/${i}x${i}/apps/firefox.png
	done

	Finstallrel 644 browser/branding/official/content/icon64.png usr/share/icons/hicolor/64x64/apps/firefox.png
	Finstallrel 644 browser/branding/official/mozicon128.png usr/share/icons/hicolor/128x128/apps/firefox.png

	# Install menu file.
	Ffile /usr/share/applications/$pkgname.desktop

	# Change the default icons
	Fln /usr/lib/$pkgname/browser/icons /usr/lib/$pkgname/chrome/icons/default

	#Preferences file
	Finstall 644 prefs.js usr/lib/$pkgname/defaults/pref/prefs.js

	#ldconfig
	Fmkdir etc/ld.so.conf.d
	echo /usr/lib/firefox >> "$Fdestdir/etc/ld.so.conf.d/firefox.conf" || Fdie

}

# optimization OK
