up2date="lynx -dump 'http://www.winki-the-ripper.de/openengine/cms/website.php?id=/de/index/download.htm'|grep -m1 'winki-\(.*\).tar.gz'|sed 's/.*-\(.*\).tar.gz.*/\1/'"
source=($url/share/dist/$pkgname-$pkgver.tar.gz)
