# Compiling Time: 0.27 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=baka-mplayer
pkgver=2.0.4
pkgrel=1
pkgdesc="A free and open source, cross-platform, libmpv based multimedia player."
url="http://bakamplayer.u8sand.net"
depends=('mpv' 'qt5-declarative' 'qt5-svg' 'qt5-x11extras')
makedepends=('qt5-tools' 'x11-protos')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_github_author="u8sand"
_F_github_tag_v="y"
_F_gnome_iconcache="y"
Finclude github gnome-scriptlet
_F_cd_path="Baka-MPlayer-${pkgver}/src"
sha1sums=('90d4d7ddad2fc2c84b58d072633622b15a9e64e2')

build()
{
	Fcd
	qmake-qt5 CONFIG+="install_translations" || Fdie
	make || Fdie
	make INSTALL_ROOT=$Fdestdir install || Fdie
	Fbuild_gnome_scriptlet
}
