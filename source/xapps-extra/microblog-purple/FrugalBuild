pkgname=microblog-purple
pkgver=0.2.3
pkgrel=1
pkgdesc="Libpurple plug-in supporting microblog services like Twitter and Idendti.ca"
depends=('pidgin>=2.5.6-2')
makedepends=('subversion')
_F_googlecode_dirname="$pkgname"
_F_googlecode_name="mbpurple"
Finclude googlecode
options=('scriptlet')
groups=('xapps-extra')
archs=('x86_64' 'i686')
_F_cd_path="$_F_googlecode_name-$pkgver"
sha1sums=('4a262a8c891244c8aec84eeef19a7d346bdd0b78')
build()
{
	Fcd
	Fsed "DESTDIR := " "DESTDIR := $Fdestdir" global.mak
	Fbuild
}

# optimization OK

