# Compiling time: 2.50 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname="sqlitestudio"
pkgver=3.1.0
pkgrel=1
pkgdesc="A sqlite database manager"
url="http://sqlitestudio.pl"
depends=('qt5-base' 'qt5-script' 'qt5-svg')
makedepends=('qt5-tools')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://sqlitestudio.pl/?act=download"
source=(http://sqlitestudio.pl/files/sqlitestudio3/complete/tar/$pkgname-$pkgver.tar.gz sqlitestudio.desktop)
sha1sums=('bf66dac32d6d9920bc550096c8d532d343591a5e' \
          '48339e35b4bed77638e6a800c4c88a71f0c82694')

build() {
	Fcd SQLiteStudio3
	qmake-qt5 || Fdie
	Fmake
	INSTALL_ROOT="${Fdestdir}" Fmakeinstall
   	Fexe SQLiteStudio3/guiSQLiteStudio/img/sqlitestudio.svg /usr/share/pixmaps/sqlitestudio.svg
   	Ffile sqlitestudio.desktop  /usr/share/applications/sqlitestudio.desktop
}
