# Compiling time: 2.50 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname="sqlitestudio"
pkgver=3.0.7
pkgrel=1
pkgdesc="A sqlite database manager"
url="http://sqlitestudio.pl"
depends=('qt5-base' 'qt5-script' 'qt5-svg')
makedepends=('qt5-tools')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://sqlitestudio.pl/?act=download"
source=(http://sqlitestudio.pl/files/sqlitestudio3/complete/tar/$pkgname-$pkgver.tar.gz includeDataStream.patch)
sha1sums=('436959cb0bf3c07ee1ce7a991bba12bedf5e6c1a' \
          'fa222d55e6e71a063fad18009df9ccc730789c21')

build() {
	Fcd SQLiteStudio3
	Fpatchall
	qmake-qt5 || Fdie
	Fmake
	INSTALL_ROOT="${Fdestdir}" Fmakeinstall
}
