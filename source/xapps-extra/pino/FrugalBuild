# Compiling Time: 0.03 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=pino
pkgver=0.1.5
pkgrel=1
pkgdesc="Pino is a Twitter client for the Linux desktop. It's simple and fast."
depends=('atk' 'libxau' 'libxdmcp' 'libgee' 'libnotify' 'webkit' 'libxinerama' 'libxi' 'libxrandr' 'libxcursor' 'libxdamage' 'libjpeg' 'libxslt' 'libxt' 'libice' 'libgcc' 'util-linux-ng')
makedepends=('vala' 'intltool')
options=('scriptlet')
_F_googlecode_ext=".tar.bz2"
_F_googlecode_dirname="pino-twitter"
_F_gnome_iconcache="y"
Finclude googlecode gnome-scriptlet
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('9070a68ec89d4501734b618f633eb794870724e7')

build() {
  Fcd
  ./waf configure --prefix=/usr || Fdie
  ./waf build || Fdie
  ./waf install --destdir=$Fdestdir || Fdie
  Fbuild_gnome_scriptlet
}

