# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=heybuddy
pkgver=0.1.8
pkgrel=1
pkgdesc="A light/feature free client for the identi.ca microblogging site."
url="https://launchpad.net/heybuddy/"
depends=('pygtk')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=(http://launchpad.net/heybuddy/0.1/$pkgver/+download/$pkgname-$pkgver.tar.gz)
sha1sums=('a3e49762cea7d5ceb4ff5e26d893f107955952a1')

_F_desktop_desc="heybuddy - Identi.ca Âµblogging client"
_F_desktop_icon="heybuddy.png"
_F_desktop_categories="Application;Network"

build() {
	Fcd
	Fmkdir usr/share/$pkgname
	Fmkdir usr/bin/
	Fcprel ./ usr/share/$pkgname/
	Fln /usr/share/$pkgname/$pkgname.py usr/bin/$pkgname
	Finstallrel 644 assets/icon.png usr/share/icons/$pkgname.png
	Fdesktop2
}
