# Last modified: Thu, 03 Aug 2006 17:58:32 +0200
# Compiling time: 1.67 SBU
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=sylpheed-claws
pkgver=2.4.0
pkgrel=1
pkgdesc="The extended version of Sylpheed, a GTK+ based, lightweight, and fast e-mail client"
url="http://sylpheed-claws.sourceforge.net"
groups=('xapps-extra')
archs=('i686' 'x86_64')
depends=('openssl' 'aspell' 'clamav' 'libgnomeprintui' 'pilot-link' 'openldap' 'gtk+2' 'atk' 'gpgme' 'cairo' 'startup-notification' 'spamassassin' 'curl' 'gdk-pixbuf')
Finclude sourceforge
sha1sums=('d3acc0a0879927c1e6396a0fa9a0c5e62de10dda')

build() {
	Fmake --with-config-dir=.sylpheed-claws --enable-aspell --enable-ldap --disable-pgpmime-plugin --enable-spamassassin-plugin --disable-libetpan
	
	cd tools
	make
	for tool in *.pl *.py *.rc *.sh tb2sylpheed update-po uudec; do
    		Fexerel /usr/lib/sylpheed-claws/tools/${tool}
	done
	Ffilerel /usr/lib/sylpheed-claws/tools/multiwebsearch.conf
	cd ..
	Ffilerel sylpheed-claws-64x64.png /usr/share/pixmaps/sylpheed-claws.png

	Fmakeinstall
}

# optimization OK
