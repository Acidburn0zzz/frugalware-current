# Compiling Time: 1.43 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=djvulibre
pkgver=3.5.18
pkgrel=1
pkgdesc="DjVu is a web-centric format for distributing documents and images."
depends=('libtiff' 'libxi' 'libgl' 'qt' 'libxmu')
makedepends=('kdelibs' 'gnome-mime-data' 'gnome-icon-theme' 'htop')
rodepends=('xdg-utils') 
groups=('xapps-extra')
archs=('i686')
options=('scriptlet')
_F_sourceforge_dirname="djvu"
Finclude sourceforge
url="http://djvulibre.djvuzone.org/"
source=(${source[@]} head_-n1.patch  no-OPTS-FLAGS-thx.patch)

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	export CFLAGS="$CFLAGS"
	export CXXFLAGS="$CXXFLAGS"
	Fconf \
		--enable-threads \
		--disable-desktopfiles \
		--enable-xmltools \
		--enable-djview
	## desktopfiles installis doneon post_install now
	make depend || Fdie
	make || Fdie
	Fmakeinstall
	Fln /usr/lib/netscape/plugins/nsdejavu.so \
		/usr/lib/mozilla/plugins/nsdejavu.so
}


sha1sums=('a0c2a904ba2050597816becb43a68f01aaebb5bd'\
          'df699c98fae73de45fb68bc6a7fe12d30a5c87bf'\
          'f64b7f6df3e9714481d9f1cfe957394adb4d71cf')
# optimization OK
