pkgname=lifeograph
pkgver=0.4.1
pkgrel=2
pkgdesc="Off-line and private journal and note taking application"
url="https://launchpad.net/lifeograph/"
depends=('gtkmm>=2.16.0-2' 'gconfmm' 'libgcrypt' 'zlib>=1.2.3-6' 'libstdc++>=4.4.0-4')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://archive.ubuntu.com/ubuntu/pool/universe/l/$pkgname/ | Flasttar"
up2date=$pkgver
source=(http://archive.ubuntu.com/ubuntu/pool/universe/l/$pkgname/${pkgname}_${pkgver}.orig.tar.gz)
sha1sums=('6d456a8edf6ce079c37fe0652af799684a491beb')
build()
{
	Fcd $pkgname-$pkgver/src
	Fbuild
}