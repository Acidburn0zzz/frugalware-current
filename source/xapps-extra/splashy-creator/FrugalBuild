# Contributor: jedifox <j3d1f0x@free.fr>

pkgname=splashy-creator
pkgver=2.2
pkgrel=1
pkgdesc="Creator manager to create custom Splashy theme"
url="http://www.nanolx.org"
depends=('splashy' 'sed' 'pygtk>=2.4' 'python>=2.4')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.nanolx.org/free/ |Flasttar"
source=($url/free/$pkgname-$pkgver.tar.bz2)
sha1sums=('6b42a3b515dfe729c2395ebb1dad6394f9bf9a79')

build()
{
	Fcd $pkgname
	Fmkdir /usr/bin/
	Fmake
	Fmakeinstall CACHE_DISABLE=y
}
