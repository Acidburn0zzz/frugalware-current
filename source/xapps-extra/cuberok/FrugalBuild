pkgname=cuberok
pkgver=0.0.9
pkgrel=1
pkgdesc="Yet another music player based on Qt4."
depends=('gstreamer' 'libx11' 'audiere' 'libqtphonon' 'libqtxml' 'taglib' 'libqtsql' 'libqtnetwork')
options=('scriptlet')
Finclude googlecode
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('3f6c809c771e4a65e4ed23332dcafb25e1c84ac0')

build() {
  Fcd
  ./unix_build.sh || Fdie
  make INSTALL_ROOT=$Fdestdir/usr install || Fdie
}

# optimization OK
