pkgname=cuberok
pkgver=0.0.8
pkgrel=1
pkgdesc="Yet another music player based on Qt4."
depends=('gstreamer' 'libx11' 'audiere' 'libqtphonon' 'libqtxml' 'taglib' 'libqtsql' 'libqtnetwork')
options=('scriptlet')
Finclude googlecode
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('c4305f9fd76e97310e101239f6d595ba459ac08d')

build() {
  Fcd
  ./unix_build.sh || Fdie
  make INSTALL_ROOT=$Fdestdir/usr install || Fdie
}

# optimization OK
