# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=playonlinux
pkgver=2.3
pkgrel=1
pkgdesc="GUI for managing Windows and DOS programs under linux"
url="http://www.playonlinux.com"
rodepends=('xterm')
depends=('libgcc' 'freeglut' 'libgl' 'libglx' 'libxext' 'libxdamage' 'wxpython' 'wine' 'lynx' 'cabextract')
groups=('xapps-extra')
archs=('i686' '!x86_64')
_F_archive_name="PlayOnLinux"
Fpkgversep="_"
_F_cd_path="$pkgname"
up2date="lynx -dump $url/en/download-generic.html | Flasttar"
source=(http://www.playonlinux.com/script_files/PlayOnLinux/$pkgver/PlayOnLinux_$pkgver.tar.gz)
sha1sums=('380be86280882d04b3135d49decf2a4864c4fb4c')

build() 
{
  Fmkdir usr/share/
  cp -r $Fsrcdir/$pkgname $Fdestdir/usr/share/  || Fdie
  Fmkdir usr/bin
  Fwrapper "/usr/share/playonlinux/playonlinux "$@"" playonlinux
  Fcd
  Ficonrel etc/$pkgname.png
  Fmkdir usr/share/applications
  Finstallrel 644 etc/PlayOnLinux.desktop /usr/share/applications
}
