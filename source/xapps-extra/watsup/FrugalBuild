# Compiling Time: 0.03 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=watsup
pkgver=1.2
pkgrel=1
pkgdesc="Watsup monitors Linux system resources and the processes using those resources."
url="http://kornelix.squarespace.com/watsup/"
depends=('gtk+2' 'freetype2' 'libxau' 'libxdmcp' 'libstdc++' 'libxdamage' 'libxext' 'libxml2')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686')
Fpkgversep="."
up2date="lynx -dump http://kornelix.squarespace.com/download/ | Flasttar"
source=(http://kornelix.squarespace.com/storage/programs/$pkgname/$pkgname-$pkgver.tar.gz)
_F_cd_path="$pkgname"
sha1sums=('42dfb4a5d451a410c115c18addb4cec893c7f31b')

_F_desktop_name="Watsup"
_F_desktop_icon="/usr/share/watsup/icons/watsup.png"
_F_desktop_categories="System;"

build()
{
	Fcd
	Fsed "/usr/local" "/usr" Makefile
	Fmake
	Fmakeinstall
	Fdesktop2
}

