# Compiling Time: 0.03 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=watsup
pkgver=1.7
pkgrel=2
pkgdesc="Watsup monitors Linux system resources and the processes using those resources."
url="http://kornelix.squarespace.com/$pkgname/"
depends=('gtk+2>=2.16.2-2' 'freetype2' 'libxau>=1.0.4' 'libxdmcp' 'libstdc++' 'libxdamage' 'libxext' 'libxml2')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://kornelix.squarespace.com/downloads/ | Flasttar"
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('a49e6298153c585221eb67169f567420e3dc93ab')

_F_desktop_name="Watsup"
_F_desktop_desc="System and Process Monitor"
_F_desktop_icon="/usr/share/watsup/icons/watsup.png"
_F_desktop_categories="Utility"

build()
{
  Fcd
  Fsed "@xdg-desktop-menu" "#@xdg-desktop-menu" Makefile
  export PREFIX=/usr Fmake
  Fmakeinstall
  Fmkdir usr/share/applications/
  #"make LAUNCHER" doesn't work for now
  #make LAUNCHER=$Fdestdir/usr/share/applications/$pkgname.desktop launcher || Fdie
  Fdesktop2
}
