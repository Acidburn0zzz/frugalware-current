pkgname=psi
pkgver=0.11
pkgrel=1
pkgdesc="Psi is a free instant messaging application designed for the Jabber IM network."
depends=('aspell' 'qca>=2.0.0' 'libxi')
license="GPLv2"
archs=('i686' 'x86_64')
groups=('xapps-extra')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
url="http://psi-im.org/"
up2date="lynx -dump http://psi-im.org/download | Flasttar"
sha1sums=('834fac4b51d92e2502cb08d01d40f05ffcdce4a2')
options=('scriptlet')

build() {
	rm -r ${Fsrcdir}/$pkgname-$pkgver/third-party || Fdie
	Fmake
	Fmakeinstall INSTALL_ROOT=$Fdestdir
}

# optimization OK
