depends=('openssl>=1.0.0' 'lcms' 'cairomm' 'libgcc' 'atk' 'gtkmm>=2.10.10-3' 'glibmm' 'freetype2' 'libxcb>=1.3-1' \
	'pango>=1.14.3' 'libgc>=7.0' 'glib2' 'gtkspell' 'popt' 'gtk+2>=2.20.0-2' 'python>=2.7' 'perl' \
	'poppler-glib' 'imagemagick>=6.5.3_2-1' 'gsl')
makedepends=('boost>=1.34.1' 'intltool' 'perl-xml-parser')
rodepends=('libxml2>=2.6.20' 'pyxml' 'libxslt' 'lxml')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
Finclude sourceforge
