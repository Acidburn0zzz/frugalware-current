pkgname=inkscape
pkgver=0.44
pkgrel=2
pkgdesc="A vector illustrator program for GNOME"
url="http://www.inkscape.org/"
depends=('lcms' 'atk' 'gtkmm' 'libxslt' 'pango' 'loudmouth>=1.0.4-3' 'libgc' 'gtkspell' 'popt' 'perl' 'python' 'desktop-file-utils' \
	'libxml2' 'boost')
makedepends=('intltool' 'perl-xml')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
Finclude sourceforge
sha1sums=('6f145e327325fc0753ba401dba008c09f72e2373')

build()
{
	Fbuild  --without-gnome-print \
		--with-gnu-ld \
		--without-gnome-vfs \
		--enable-lcms \
		--with-perl \
		--with-python \
		--enable-inkboard
}


# optimization OK
