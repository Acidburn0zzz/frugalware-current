pkgname=inkscape
pkgver=0.44.1
pkgrel=3
pkgdesc="A vector illustrator program for GNOME"
url="http://www.inkscape.org/"
depends=('lcms' 'atk' 'gtkmm>=2.10.1' 'libxslt' 'pango>=1.14.3' 'loudmouth>=1.2.0' 'libgc' 'gtkspell' \
	'popt' 'perl' 'python' 'desktop-file-utils' 'libxml2' 'boost')
makedepends=('intltool' 'perl-xml')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
Finclude sourceforge
source=($source bindings-compile-fix.patch)

build()
{
	Fbuild  --without-gnome-print \
		--with-gnu-ld \
		--without-gnome-vfs \
		--enable-lcms \
		--with-perl \
		--with-python \
		--enable-inkboard
}


sha1sums=('6e55d0cf9f4ef50aaca250de36cde33654fb180a'\
          '85d9b4a7bf718a51efa13eb40fcc01a2d9378734')
# optimization OK
