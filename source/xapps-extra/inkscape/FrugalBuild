pkgname=inkscape
pkgver=0.45.1
pkgrel=1
pkgdesc="A vector illustrator program for GNOME"
url="http://www.inkscape.org/"
makedepends=('intltool' 'perl-xml')
depends=('openssl' 'lcms' 'cairomm' 'libgcc' 'atk' 'gtkmm>=2.10.1' 'glibmm' 'freetype2' 'libxcb' \
	'pango>=1.14.3' 'libgc>=6.4' 'glib2' 'gtkspell' 'popt' 'gtk+2>=2.10.7' 'python>=2.5' 'perl' 'boost')
rodepends=('libxml2>=2.6.20' 'pyxml' 'libxslt')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
Finclude sourceforge
source=($source bindings-compile-fix.patch)

build()
{
	Fbuild  --without-gnome-print \
		--with-gnu-ld \
		--without-gnome-vfs \
		--enable-lcms \
		--with-perl \
		--with-python \
		--enable-inkboard \
		--with-xft
}

sha1sums=('f3df9eafc0fdfcc5f5024ea4bec4d7c477698380'\
          '85d9b4a7bf718a51efa13eb40fcc01a2d9378734')
