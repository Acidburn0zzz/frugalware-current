sha1sums=('220ade981069a91d3afab9cbff75f65c75119da2')

# TODO: java ?!

build()
{
	Fbuild \
		--without-gnome-vfs \
		--enable-lcms \
		--with-perl \
		--with-python \
		--with-xft \
		--enable-poppler-cairo \
		--disable-dependency-tracking
		## Debug
		## --enable-debug --with-debug
}

# optimization OK
