pkgname=gimp
pkgver=2.9.6
pkgrel=2
pkgdesc="The GNU Image Manipulation Program"
url="http://www.gimp.org/"
depends=('libgexiv2' 'libxpm' 'libmng' 'poppler-glib' 'aalib' 'webkit-gtk2' 'libmypaint' \
	'pygtk>=2.24.0-3' 'glib-networking' 'gegl>=0.3.10-3' 'ghostscript' 'iso-codes' 'darktable')
groups=('xapps-extra')
archs=('x86_64')
makedepends=('intltool' 'gtk+2>=2.24.31-2' 'x11-protos')
up2date="Flasttar http://download.gimp.org/mirror/pub/gimp/v2.9/"
source=(http://download.gimp.org/mirror/pub/gimp/v2.9/$pkgname-$pkgver.tar.bz2)
sha1sums=('8a8b50bc75de087aae2310c65c4ec026fbac734f')
options=('scriptlet')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude gnome-scriptlet
Fconfopts="	--enable-mp \
		--enable-gimp-console \
		--enable-gimp-remote \
		--enable-python \
		--with-gif-compression=lzw
		--with-libcurl"

build() {
	Fbuild
	Fln /usr/bin/gimp-2.9 usr/bin/gimp
	Fln /usr/bin/gimp-console-2.9 usr/bin/gimp-console
	Fln /usr/bin/gimptool-2.0 usr/bin/gimptool
}

# optimization OK
