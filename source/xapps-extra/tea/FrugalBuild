pkgname=tea
realname=tea-editor
pkgver=14.1.1
pkgrel=1
pkgdesc="TEA is a GTK2-based text editor for Linux and *BSD."
url="http://tea.linux.kiev.ua/"
license="GPL"
depends=('gtk+2' 'gtksourceview')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
source=(http://heanet.dl.sourceforge.net/sourceforge/tea-editor/$pkgname-$pkgver.tar.bz2)
sha1sums=('ba64d57262d5fdab44a6b021b24ffbcf79644df5')

build() {
	Fbuild
	Fmkdir usr/share/pixmaps
	Fcp /usr/share/tea/pixmaps/tea_icon_v2.png /usr/share/pixmaps/tea.png
	Fdesktop tea tea.png "Utility;Editor;"
}

# optimization OK
