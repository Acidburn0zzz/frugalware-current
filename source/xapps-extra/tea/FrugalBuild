pkgname=tea
realname=tea-editor
pkgver=14.1
pkgrel=1
pkgdesc="TEA is a GTK2-based text editor for Linux and *BSD."
url="http://tea.linux.kiev.ua/"
license="GPL"
depends=('gtk+2' 'gtksourceview')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
source=(http://heanet.dl.sourceforge.net/sourceforge/tea-editor/$pkgname-$pkgver.0.tar.bz2)
sha1sums=('dbaf41de613b9404f88c63110b1d6bfc246f9f2a')
_F_cd_path=$pkgname-$pkgver.0

build() {
	Fbuild
	Fmkdir usr/share/pixmaps
	Fcp /usr/share/tea/pixmaps/tea_icon_v2.png /usr/share/pixmaps/tea.png
	Fdesktop tea tea.png "Utility;Editor;"
}

# optimization OK
