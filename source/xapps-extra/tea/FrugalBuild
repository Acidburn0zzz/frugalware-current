# Compiling Time: 0.10 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=tea
realname=tea-editor
pkgver=14.2.4
pkgrel=2
pkgdesc="TEA is a GTK2-based text editor for Linux and *BSD."
url="http://tea.linux.kiev.ua/"
license="GPL"
depends=('gtk+2' 'gtksourceview')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
source=(http://heanet.dl.sourceforge.net/sourceforge/tea-editor/$pkgname-$pkgver.tar.bz2)
sha1sums=('d8a3af3e305ed661fe5d1dcccc3d914450240ac8')
_F_desktop_name=Tea
_F_desktop_icon=tea.png
_F_desktop_categories="Utility;Editor;"

build() {
	Fbuild
	Fmkdir usr/share/pixmaps
	Fcp /usr/share/tea/pixmaps/tea_icon_v2.png /usr/share/pixmaps/tea.png
	Fdesktop2
}

# optimization OK
