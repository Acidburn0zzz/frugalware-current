# Compiling Time: 0.06 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=xvidcap
pkgver=1.1.4
pkgrel=1
pkgdesc="A program to capture a video of your X session"
url="http://xvidcap.sourceforge.net"
depends=('libx11' 'libxmu' 'libjpeg' 'libpng' 'libvorbis' 'ffmpeg' 'scrollkeeper' 'libglade')
makedepends=('perl-xml' 'intltool')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_gnome_scrollkeeper=y
Finclude sourceforge gnome-scriptlet
sha1sums=('51b3a8e3fcc09ab0d2b224e9e6080def1c85ec09')

build() {
	Fbuild_slice_scrollkeeper
	Fcd
	Fmake
	Fmkdir /usr/share/pixmaps
	Fmkdir /usr/share/applications
	make install prefix=$Fdestdir/usr
	Fbuild_gnome_scriptlet
}

# optimization OK
