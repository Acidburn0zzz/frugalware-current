# Compiling Time: 0.46 SBU
# Maintainer: Miklos Nemeth <desco@frugalware.org>
# Contributor: geekitus <geekitus@tele2.fr>

pkgname=gtk-gnutella
pkgver=0.96.3
pkgrel=1
pkgdesc="Gtk-Gnutella is a clone of Gnutella"
depends=('gtk+2' 'glib2' 'libxml2')
archs=('i686' 'x86_64')
groups=('xapps-extra')
options=('scriptlet')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('7469d4ea685c387f38e927efeb8b9947a9ec72e3')

build()
{
	Fcd
	./Configure -Dccflags="$CFLAGS" -Dprefix=/usr -Dprivlib=/usr/share/gtk-gnutella \
		-Dofficial=true -Dgtkversion=2 -ders -U y
	make || return 1
	make install INSTALL_PREFIX=$startdir/pkg
}



# optimization OK
