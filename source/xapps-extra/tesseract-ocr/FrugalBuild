build() {
	Fcd
	mv ../tessdata/* tessdata
	Fconf
	Fpatchall
	Fmake
	rm -f java/makefile
	Fmakeinstall
	find $Fdestdir/usr/share/tessdata -type f -exec chmod 0644 {} \;
}

# optimization OK
