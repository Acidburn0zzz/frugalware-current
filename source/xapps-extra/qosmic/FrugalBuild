pkgname=qosmic
pkgver=1.4.8
pkgrel=2
pkgdesc="A cosmic recursive flame fractal editor that uses flam3 and Qt4"
depends=('libqtgui>=4.6.2-3' 'util-linux-ng' 'lua' 'flam3>=2.7.18-2')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_googlecode_ext=".tar.bz2"
Finclude googlecode
_F_conf_configure="./build.sh"
sha1sums=('3a97144df09813925760338db100f0c52ba8dd74')

build() {
  Fmake
  make INSTALL_ROOT=$Fdestdir install || Fdie
}

