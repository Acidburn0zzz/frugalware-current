pkgname=qosmic
pkgver=1.4.5
pkgrel=1
pkgdesc="A cosmic recursive flame fractal editor that uses flam3 and Qt4"
depends=('libqtgui' 'util-linux-ng' 'lua' 'flam3')
groups=('xapps-extra')
archs=('i686')
_F_googlecode_ext=".tar.bz2"
Finclude googlecode
_F_conf_configure="./build.sh"
sha1sums=('4017004135e64221362c3e4e1be0bacc1f657aab')

build() {
  Fmake
  make INSTALL_ROOT=$Fdestdir install || Fdie
}
