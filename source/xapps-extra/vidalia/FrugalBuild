pkgname=vidalia
pkgver=0.2.10
pkgrel=1
pkgdesc="Controller GUI for Tor"
url="https://www.torproject.org/vidalia"
rodepends=('tor')
depends=('libqtgui>=4.6.2-3' 'libice' 'libxrender' 'libxext' 'libqtxml>=4.6.2-3' 'libqtnetwork>=4.6.2-3' 'openssl>=1.0.0' 'libgcc' 'util-linux-ng'  'libqtcore>=4.6.2-3')
makedepends=('qt4')
options=('scriptlet')
groups=('xapps-extra')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
Finclude cmake gnome-scriptlet
archs=('i686' 'x86_64')
up2date="elinks -dump '$url' | Flasttar"
source=(https://www.torproject.org/$pkgname/dist/$pkgname-$pkgver.tar.gz)
sha1sums=('a70b4ceece9b54e15d7f4929a4d790e9c61c55df')

build() {
	CMake_build
	Fbuild_gnome_scriptlet
}

# optimization OK
