# Compiling Time: 0.09 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=vidalia
pkgver=0.1.15
pkgrel=2
pkgdesc="Controller GUI for Tor"
url="https://www.torproject.org/vidalia"
rodepends=('tor')
depends=('libqtgui>=4.6.2-3' 'libice' 'libxrender' 'libxext' 'libqtxml>=4.6.2-3' 'libqtnetwork>=4.6.2-3' 'openssl' 'libgcc' 'util-linux-ng'  'libqtcore>=4.6.2-3')
makedepends=('qt4')
options=('scriptlet')
groups=('xapps-extra')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
Finclude cmake gnome-scriptlet
archs=('i686' 'x86_64')
up2date="elinks -dump '$url' | Flasttar"
source=(https://www.torproject.org/$pkgname/dist/$pkgname-$pkgver.tar.gz)
sha1sums=('36d81c063f001db4509a4ad5e3eab1fb849f0562')

build() {
  Fcd
  CMake_build
  Fmake
  make DESTDIR=$Fdestdir install || Fdie
  Fbuild_gnome_scriptlet
}

