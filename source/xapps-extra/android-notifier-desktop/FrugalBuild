# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=android-notifier-desktop
pkgver=0.3
pkgrel=1
pkgdesc="Multi-platform client for the androd-notifier app."
depends=('j2re' 'libnotify' 'bluez')
groups=('xapps-extra')
archs=('i686' 'x86_64')

if [ "${CARCH}" = 'x86_64' ]; then
_F_googlecode_ext="-linux-x86_64.zip"
sha1sums=('7f23b6b6415bdb98d35bdfc36865ead0522ba42a' \
          '9b3b4665ba5c430ccba175924d29e04858ff5eaa')
    else
_F_googlecode_ext="-linux-x86.zip"
sha1sums=('9b116b42bf9a76ffbdfac2b36fc48109cfcab484' \
          '9b3b4665ba5c430ccba175924d29e04858ff5eaa')
fi
Finclude googlecode
source=($source $pkgname.png)

_F_desktop_name="Android Notifier Desktop"
_F_desktop_desc="Android Notifier desktop client"
_F_desktop_icon="android-notifier-desktop"
_F_desktop_exec="/usr/share/android-notifier-desktop/run.sh"
_F_desktop_categories="Utility"

build() {
  Fmkdir usr/share/$pkgname/

  Fdesktop2
  Ficon $pkgname.png

  Fcd $pkgname
  Fcprel $pkgname.jar usr/share/$pkgname/
  Fsed "java" "/usr/lib/java/jre/bin/java" run.sh
  Fexerel run.sh usr/share/$pkgname/
  Fcprel lib usr/share/$pkgname/
}

