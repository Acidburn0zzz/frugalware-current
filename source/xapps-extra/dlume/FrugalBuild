# Compiling Time: 0.05 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=dlume
pkgver=0.2.4
pkgrel=1
pkgdesc="Dlume is a nice, GTK-2 based address book"
url="http://clay.ll.pl/"
depends=('gtk+2')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url | grep -m1 $pkgname | sed 's/.*-\(.*\).t.*/\1/'"
source="$url/download/$pkgname-$pkgver.tar.gz"
sha1sums=('cf432d4a9a9f2ce03fd3aa9ccde3905d38070f4e')

build() {
    Fbuild
    Fdesktop dlume dlume.png "Office;"
}

# optimization OK
