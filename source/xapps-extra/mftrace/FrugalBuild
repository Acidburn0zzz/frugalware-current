pkgname=mftrace
pkgver=1.2.4
pkgrel=1
pkgdesc='Trace a TeX bitmap font into a PFA or PFB font'
groups=('xapps-extra')
archs=('i686' 'x86_64')
url="http://www.xs4all.nl/~hanwen/mftrace/"
depends=('glibc' 't1utils' 'potrace' 'tetex' 'fontforge' 'python')
up2date="lynx -dump $url | grep -m 1 'http.*tar.gz' | cut -d - -f 2 | sed 's|.tar.gz||'"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('137d10d1c98230bdcb5f057dc5e489e663b8fa4c')

build()
{
	Fsed "-O2" "$CFLAGS" GNUmakefile.in
	Fbuild
}

