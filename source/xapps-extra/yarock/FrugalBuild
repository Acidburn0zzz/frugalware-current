pkgname=yarock
pkgver=0.9.64
pkgrel=1
pkgdesc="Yarock is Qt4 Modern Music Player with collection browser based on conver art"
depends=('libx11' 'libqtnetwork' 'libqtsql' 'taglib' 'phonon' 'qjson' 'libechonest')
makedepends=('qt4-linguist')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_cmake_confopts="-DCMAKE_INSTALL_PREFIX=/usr"
_F_cmake_type="Release"
Finclude cmake
_F_gnome_iconcache="y"
_F_launchpad_name="Yarock"
_F_launchpad_sep="_"
_F_launchpad_ext="_11_source.tar.gz"
Finclude launchpad gnome-scriptlet
_F_cd_path="Yarock_${pkgver}_11_source"
sha1sums=('ca25335dd4b4c73d7f614e917e903565cac798a7')

build() {
	Fcd
	CMake_build
	Fbuild_gnome_scriptlet
}

# optimization OK
