# Compiling Time: 0.02 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=fotox
pkgver=44
pkgrel=1
pkgdesc="A program for improving image files made with a digital camera"
url="http://kornelix.squarespace.com/fotox/"
depends=('gtk+2' 'freetype2' 'libxau' 'libxdmcp' 'libstdc++' 'libxdamage' 'libxext' 'libxml2' 'exiv2')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686')
Fpkgversep="."
up2date="lynx -dump http://kornelix.squarespace.com/download/ | Flasttar"
source=(http://kornelix.squarespace.com/storage/$pkgname/$pkgname.$pkgver.tar.gz)
_F_cd_path="$pkgname"
sha1sums=('fbfad9d8c34857685503cc5704dc3a0714ef8a33')

_F_desktop_name="Fotox"
_F_desktop_desc="Improve images made whith a digital camera"
_F_desktop_icon="/usr/share/fotox/icons/fotox.png"
_F_desktop_categories="Graphics;2DGraphics;RasterGraphics;GTK;"

build()
{
  Fmkdir usr/bin
  Fcd
  export PREFIX=/usr
  ./build build || Fdie
  export PREFIX=$Fdestdir/usr
  ./build install || Fdie
  Fdesktop2
}
