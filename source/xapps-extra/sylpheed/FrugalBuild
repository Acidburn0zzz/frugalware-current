# Compiling time: 0.54 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>
# Contributor: Bence Nagy <nagybence@tipogral.hu>

pkgname=sylpheed
pkgver=3.0.3
branch=3.0
pkgrel=1
pkgdesc="A GTK+ based, lightweight, and fast email client"
url="http://sylpheed.sraoss.jp/"
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
depends=('gpgme' 'libldap>=2.4.23-2' 'gtkspell>=2.0.16-2' 'libxcb' 'freetype2' 'glib2>=2.20.5')
makedepends=('openldap>=2.4.23-2')
source=($url/$pkgname/v${branch}/$pkgname-$pkgver.tar.bz2)
up2date="lynx -dump $url/en | grep "Version" | sed -e 's/.* \([0-9\.]\)/\1/'"
build() {
	Fbuild --enable-ssl --enable-gpgme --enable-ldap
	Ffilerel /usr/share/pixmaps/sylpheed.png
	Ffilerel /usr/share/applications/sylpheed.desktop
}

sha1sums=('b12f7dbe40de408717229e2b6a4a2ac3218c5985')

# optimization OK
