# Compiling Time: 7.3 SBU
# Maintainer: Melko <melko@frugalware.org>

options+=('asneeded')

pkgname=kicad
pkgver=20130611
_realver=2013.06.11
pkgrel=1
pkgdesc="Electronic schematic and printed circuid board design tools."
url="http://iut-tice.ujf-grenoble.fr/kicad/"
depends=('wxgtk')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_cmake_confopts="-DKICAD_STABLE_VERSION=ON"
Finclude cmake
up2date="Flastarchive http://iut-tice.ujf-grenoble.fr/cao/ .zip"
source=(http://ftp.frugalware.org/pub/other/people/melko/$pkgname-${_realver}.tar.bz2
	http://ftp.frugalware.org/pub/other/people/melko/$pkgname-libraries-${_realver}.tar.bz2
	http://ftp.frugalware.org/pub/other/people/melko/$pkgname-walter-libraries-${_realver}.tar.bz2)
sha1sums=('e399600d45446c7a7b933e2c3180929ff5da161b' \
          'b96ff28d1c1c6174888557a57cae7ed7783dfa6f' \
          '7c3013ac165b737679e305bd8bbb796b1b880b70')

build() {
	Fcd $pkgname-$_realver
	CMake_build -DKICAD_STABLE_VERSION=ON

	cd $Fsrcdir/$pkgname-libraries-$_realver || Fdie
	cp -r $Fsrcdir/$pkgname-walter-libraries-$_realver/{library,modules} . || Fdie
	CMake_build
}

# optimization OK
