# Compiling time: 7.13 SBU
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=scribus
pkgver=1.3.3.2
pkgrel=1
pkgdesc="A professional desktop publishing application"
url="http://www.scribus.org.uk"
depends=('cups' 'lcms' 'qt' 'libxml2' 'libart_lgpl' 'python' 'libgnomecanvas')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
source=(${source[@]} hyphenation-symlink.patch)
sha1sums=('85e928a50dfed7d4b5d08c237e649e78e0592dac' \
	  '56fa91e98aa256a4195ebd7e07f227c299ca75c7')

build() {
	Fcd
	Fsed " \$(prefix)" " \$(DESTDIR)\$(prefix)" scribus/Makefile.in
	Fbuild --enable-cairo
	Fsed "scribusicon" "/usr/share/pixmaps/scribusicon.png" scribus.desktop
	Ffilerel /usr/share/applications/scribus.desktop
	# for Huhyphn
	Frm /usr/lib/scribus/dicts/hyph_hu.dic
}

# optimization OK
