# Compiling Time: 0.18 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=cairo-dock
pkgver=1.6.3.1
pkgrel=1
pkgdesc="A light eye-candy fully themable animated dock for any Linux desktop."
_F_berlios_ext=".tar.bz2"
Finclude berlios
url="http://www.cairo-dock.org/"
depends=('cairo>=1.8.6' 'gtk+2>=2.14.7' 'dbus>=1.2.12' 'libxext' 'libxcomposite' \
	'dbus-glib>=0.78' 'librsvg>=2.22.2' 'libxtst' 'libxrender')
makedepends=('intltool')
groups=('xapps-extra')
options=('scriptlet')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://developer.berlios.de/project/showfiles.php?group_id=8724&release_id=15624' \
	| grep tar.bz2 | grep -v beta | head -n1 | sed 's/.*k-\(.*\).t.*/\1/'"
source=(${source[@]} $pkgname-$pkgver-xcomposite.diff)
Fconfopts="${Fconfopts[@]} --enable-glitz --enable-xextend"
sha1sums=('de02bc4759ad0b69d1857041536a965240690622' \
          '9b1cc227bc3b091ad7cf10e02eb506e157e498b9')

build()
{
	Fcd
	Fpatchall
	Fautoconfize
	libtoolize || Fdie
	Fconf
	make || Fdie
	Fmakeinstall
}

# optimization OK
