pkgname=cairo-dock
pkgver=2.1.0
pkgrel=1
pkgdesc="A light eye-candy fully themable animated dock for any Linux desktop."
_F_berlios_ext=".tar.bz2"
Finclude berlios
url="http://www.cairo-dock.org/"
depends=('cairo>=1.8.8' 'gtk+2>=2.16.4' 'dbus>=1.2.12' 'libxext>=1.0.5-3' 'libxcomposite>=0.4.0-2' \
	'dbus-glib>=0.80' 'librsvg>=2.26.0-2' 'libxtst>=1.0.3-3' 'libxrender>=0.9.4-3' 'gtkglext>=1.2.0-5')
makedepends=('intltool')
groups=('xapps-extra')
options=('scriptlet')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://developer.berlios.de/project/showfiles.php?group_id=8724&release_id=15624' \
	| grep tar.bz2 | grep -v beta | head -n1 | sed 's/.*k-\(.*\).t.*/\1/'"
Fconfopts="${Fconfopts[@]} --enable-glitz --enable-xextend"
sha1sums=('813252cd759c04ba675079b3ee4ba41f071e6e96')

build()
{
	Fcd
	# this somehow fixes the infinite loop problem
	Fautoreconf
	Fbuild
}

# optimization OK
