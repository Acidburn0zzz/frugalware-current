pkgver=0.7.0
pkgrel=1
pkgdesc="BleachBit deletes unnecessary files to free valuable disk space and maintain privacy."
depends=('pygtk>=2.14.1-2')
options=('scriptlet')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
groups=('xapps-extra')
