pkgname=mythplugins
pkgver=0.20a
pkgrel=3
url="http://mythtv.org/"
pkgdesc="All the official MythTV plugins."
depends=('mythtv' 'libmad' 'libid3tag' 'libvorbis' 'flac>=1.1.3' 'libcdaudio' 'cdparanoia')
groups=('xapps-extra')
archs=('i686' 'x86_64')
source=(http://ftp.osuosl.org/pub/mythtv/mythplugins-$pkgver.tar.bz2 \
	mythplugins-0.20a-flac113.diff)
up2date="lynx -dump http://ftp.osuosl.org/pub/mythtv/ |grep mythplugins|Flasttarbz2"

build() {
	Fpatchall
	Fconf --enable-all --disable-mythbrowser
	qmake mythplugins.pro || Fdie
	make || Fdie
	Fmakeinstall INSTALL_ROOT=$Fdestdir
}
sha1sums=('7f9044d9c0a1d830f07077d6aac1b9a82cc8e3b8'\
          '3648331b99a86471a87e75ab1ebe0b3d1c08d2ad')

# optimization OK
