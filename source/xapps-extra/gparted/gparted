#!/bin/sh

## remove that crap if found
if [ -e /usr/share/hal/fdi/policy/gparted-disable-automount.fdi ]; then
	/usr/bin/rm -rf /usr/share/hal/fdi/policy/gparted-disable-automount.fdi
fi

## Idea stolen from fedora
/usr/bin/hal-lock --interface org.freedesktop.Hal.Device.Storage  --exclusive --run /usr/sbin/gparted.bin
