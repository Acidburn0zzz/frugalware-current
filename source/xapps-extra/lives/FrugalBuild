pkgname=lives
pkgver=0.9.7
pkgrel=1
pkgdesc="LiVES is a powerful video system aimed at the digital video artist and VJ."
url="http://www.xs4all.nl/~salsaman/lives/"
depends=('mplayer' 'imagemagick' 'gtk+2>=2.10.2' 'libjpeg' 'sox' 'transcode>=1.0.2-4' \
	'xmms' 'libavc1394' 'freetype2' 'libvisual-plugins' 'sdl')
makedepends=('imake')
rodepends=('perl' 'python')
groups=('xapps-extra')
options=('scriptlet')
archs=('i686' 'x86_64')
sha1sums=('49a774b4d0f75ff1f207e4dc166f7548fab7b6ec')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge

build()
{
	Fcd
	## nono kill this shit befor Fbuild :-D
	for noo3 in `find . -name "Makefile*"`
	do
		Fsed '-O3' '' $noo3
	done
	Fbuild --disable-dvgrab
	Frm usr/bin/lives
	Fln /usr/bin/lives-exe usr/bin/lives
}

# optimization OK
