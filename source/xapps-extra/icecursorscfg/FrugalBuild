Finclude sourceforge
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=80316&package_id=81964' | grep '$pkgname' | head -n1 | sed 's|$_F_sourceforge_ext.*$||' | sed 's|^.*-||'"
rodepends=('icewm' 'pyqt')
groups=('xapps-extra')
archs=('i686')
