# Compiling Time: 0.22 SBU
# Maintainer: jercel <jercel16@gmail.com>

pkgname=eina-music-player
pkgver=0.9.4.2
pkgrel=1
pkgdesc="A classic music player for a modern era"
url="http://eina.sourceforge.net/"
depends=('curl' 'gstreamer>=0.10.29-1' 'libnotify>=0.4.5-3' 'gtk+2>=2.20.1-1')
makedepends=('pkgconfig' 'intltool' 'cmake')
_F_gnome_iconcache="y"
options=('scriptlet')
Finclude gnome-scriptlet
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_archive_name="eina"
up2date="Flasttar https://launchpad.net/$_F_archive_name/+download/"
source=(http://launchpad.net/eina/trunk/0.9.4/+download/$_F_archive_name-$pkgver.tar.gz)
sha1sums=('9cc55f59e430c91c79dcc7d39cf21033be87c04b')

build()
{
	Fcd $_F_archive_name-$pkgver
	Fconf --prefix=/usr
	Fmakeinstall
	Fbuild_gnome_scriptlet
}
