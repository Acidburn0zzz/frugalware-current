pkgname=gmpc-lyrics
pkgver=0.16.0
pkgrel=1
pkgdesc="A lyrics fetching plugin for Gmpc."
url="http://gmpcwiki.sarine.nl/index.php/Lyrics"
depends=('gtk+2' 'gmpc>=0.16.1' 'libxml2' 'libmpd')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep Download -m1 | sed 's/.*\* \(.*\):.*/\1/'"
source=(http://download.sarine.nl/Programs/gmpc/$pkgver/$pkgname-$pkgver.tar.gz)
sha1sums=('54475d71bd581c2fa065537a0dcb9107d7ca765d')

# optimization OK
