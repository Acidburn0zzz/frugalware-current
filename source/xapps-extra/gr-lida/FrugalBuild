# Compiling Time: 0 SBU
# Maintainer: kikadf <kikadf.01@gmail.com>

options+=('asneeded')

pkgname=gr-lida
pkgver=0.11.0
pkgrel=1
pkgdesc="Front-End for DOSBox and ScummVM."
url="http://www.gr-lida.org/"
depends=('poppler-qt4' 'libqtsql' 'libqtscript' 'libqtnetwork' 'phonon')
_F_github_author="Monthy"
_F_github_tag="yes"
_F_github_ver="v$pkgver"
Finclude github
_F_cd_path="$pkgname-$pkgver"
up2date="$up2date | sed 's/v//'"
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('f6965bd7ed571f42664b7c830f96fbe82601e5f7')

build()
{
	Funpack_github
	Fsed "-lpoppler-qt4" "-lpoppler-qt4 -lz" $pkgname.pro
	qmake || Fdie
	Fmake
	make INSTALL_ROOT="${Fdestdir}" install || Fdie
	Fmv /usr/share/doc/gr-lida /usr/share/doc/gr-lida-$pkgver
}

