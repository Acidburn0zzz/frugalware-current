pkgname=lonote
pkgver=1.5.8
pkgrel=1
pkgdesc="LoNote is a personal note-taking software."
depends=('pyqt4')
makedepends=('python-3.0' '7zip')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_googlecode_ext=".7z"
Finclude googlecode
sha1sums=('8fde5c2021b3a5636a50a443d68cac26750ceedd')

build() {
	Fcd
	python3 setup.py install --root=$Fdestdir || Fdie
}
