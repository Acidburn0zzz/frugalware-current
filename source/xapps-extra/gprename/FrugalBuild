# Compiling Time: 0.00 SBU
# Maintainer: detto <detto_o@freenet.de>

pkgname=gprename
pkgver=2.2
pkgrel=1
pkgdesc="Batch renamer for files and directories"
url="http://gprename.sourceforge.net"
groups=('xapps-extra')
archs=('i686')
depends=('perl-gtk2')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge

build () {
	Fmkdir usr/bin
	Fmkdir usr/share/gprename/bin

	Fcd $pkgname-$pkgver
	Fcprrel bin/gprename usr/bin
	Fcprrel bin/gprename.pl usr/share/gprename/bin
	Fcprrel languages usr/share/gprename
	Ficonrel icon/gprename_icon.png

	_F_desktop_name="GPRename"
	_F_desktop_icon="gprename_icon.png"
	_F_desktop_categories="Other;Tool;Utility;"
	Fdesktop2

	Fmkdir usr/share/gprename/icon
	Fcprrel icon/gprename_icon.png usr/share/gprename/icon
}

sha1sums=('abce99feef9c77fae1c42187889d5ea0d00e2495')
