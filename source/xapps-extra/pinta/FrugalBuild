# Compiling time: 0.43 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=pinta
pkgver=0.5
extraver=0
pkgrel=1
pkgdesc="Pinta is a drawing/editing program modeled after Paint.NET"
url="http://pinta-project.com/"
depends=('gtk-sharp')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://pinta-project.com/"
source=(http://github.com/downloads/jpobst/Pinta/$pkgname-$pkgver.tar.gz)
options=('scriptlet')
_F_gnome_desktop=y
_F_gnome_mime=y
_F_gnome_iconcache=y
Finclude gnome-scriptlet mono
sha1sums=('ceeb55b71f7a7fe0f46756d037c11c7e526523c2')

build() {
	Fmonoexport
	Fpatchall
	Fmake
	Fmakeinstall
	#broken wrapper
	Frm usr/bin/pinta
	Fwrapper "exec /usr/bin/mono /usr/lib/pinta/Pinta.exe" $pkgname
	Fmonocleanup
	Fbuild_gnome_scriptlet
}
