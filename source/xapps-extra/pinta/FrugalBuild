# Compiling time: 0.43 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=pinta
pkgver=0.6_1
pkgrel=1
pkgdesc="Pinta is a drawing/editing program modeled after Paint.NET"
url="http://pinta-project.com/"
depends=('gtk-sharp')
groups=('xapps-extra')
archs=('i686' 'x86_64' 'ppc')
up2date="Flasttar http://pinta-project.com/"
source=(http://github.com/downloads/jpobst/Pinta/$pkgname-${pkgver/_/-}.tar.gz)
options=('scriptlet')
_F_gnome_desktop=y
_F_gnome_mime=y
_F_gnome_iconcache=y
Finclude gnome-scriptlet mono
sha1sums=('3623e92e2c82bd8006be4a55dbc9ee8f6eb8fa16')
_F_cd_path=$pkgname-0.6

build() {
	Fmonoexport
	Fpatchall
	Fmake
	Fmakeinstall
	Fmonocleanup
	Fbuild_gnome_scriptlet
}
