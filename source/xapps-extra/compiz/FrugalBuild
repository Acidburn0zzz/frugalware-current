depends=('libgl' 'libglx' 'gconf' 'librsvg' 'libpng' 'control-center' 'gnome-desktop' 'libxcomposite' 'libxfixes' \
	 'libxdamage' 'libxrandr' 'libxinerama' 'libice' 'libsm' 'startup-notification' 'libwnck' 'libxrender')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/compiz.schemas' \
		  '/etc/gconf/schemas/gwd.schemas')
Finclude gnome-scriptlet
up2date="lynx -dump http://xorg.freedesktop.org/archive/individual/app/ | grep $pkgname | Flasttar"
source=(http://xorg.freedesktop.org/archive/individual/app/$pkgname-$pkgver.tar.bz2 \
	compiz-0.3.2-defaults.patch)
Fconfopts="$Fconfopts --enable-librsvg --disable-metacity --enable-gnome --enable-gtk"

