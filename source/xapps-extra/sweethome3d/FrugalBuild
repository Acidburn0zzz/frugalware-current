# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=sweethome3d
pkgver=2.5
pkgrel=1
pkgdesc="An interior design application"
url="http://www.sweethome3d.eu/"
depends=('j2re' 'libgl>=7.4.2-5' 'libxext>=1.0.5-3')
_F_sourceforge_ext="-linux-x86.tgz"
_F_sourceforge_name="SweetHome3D"
Finclude sourceforge
groups=('xapps-extra')
archs=('i686' 'x86_64')
source=($source $pkgname.png)
sha1sums=('4c7d5292633ac51b54b48ac0c0055e65c42ccb8b' \
          'ce77389c4bd49faa3dceb2db2d3cabb124a4d2ea')

_F_desktop_name="Sweet Home 3D"
_F_desktop_icon="$pkgname.png"
_F_desktop_categories="Office;Java;"

build() {
  Fcd $_F_sourceforge_name-$pkgver
  sed -i 's#"$PROGRAM_DIR"/jre1.6.0_20#/usr/lib/java/jre#g;
          3,8 c\PROGRAM_DIR=/usr/share/sweethome3d' $_F_sourceforge_name
  Fexerel $_F_sourceforge_name usr/bin/$pkgname
  Fmkdir usr/share/$pkgname/lib
  Finstallrel 644 lib/* usr/share/$pkgname/lib
  Ficon $pkgname.png
  Fdesktop2
}
