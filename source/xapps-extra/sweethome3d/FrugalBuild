pkgname=sweethome3d
pkgver=1.8
pkgrel=1
pkgdesc="An interior design application"
url="http://www.sweethome3d.eu/"
depends=('j2re' 'libgl')
_F_sourceforge_ext="-linux-x86.tgz"
_F_sourceforge_name="SweetHome3D"
Finclude sourceforge
groups=('xapps-extra')
archs=('i686')
source=($source $pkgname-$pkgver.diff)
sha1sums=('9973d7f4b58380323ff0165f41d50f1b0af59f41' \
          '9bfc2dd31a0282f2f7b45a5c09e3777172850060')

build() {
  Fcd $_F_sourceforge_name-$pkgver
  Fpatchall
  Fmakeinstall
}

