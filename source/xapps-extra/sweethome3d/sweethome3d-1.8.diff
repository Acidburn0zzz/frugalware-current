diff -Naur SweetHome3D-1.6~/Makefile SweetHome3D-1.6/Makefile
--- SweetHome3D-1.6~/Makefile	1969-12-31 18:00:00.000000000 -0600
+++ SweetHome3D-1.6/Makefile	2009-01-17 22:12:40.000000000 -0600
@@ -0,0 +1,22 @@
+prefix=/usr
+bindir=$(prefix)/bin
+datadir=$(prefix)/share
+
+install: install-dirs
+	@echo "installing binaries..."
+	@install -m755 SweetHome3D $(DESTDIR)$(bindir)/sweethome3d
+	@echo "installing libraries..."
+	@install -m755 lib/*.so $(DESTDIR)$(datadir)/java/sweethome3d
+	@install -m644 lib/*.jar $(DESTDIR)$(datadir)/java/sweethome3d
+	@echo "installing freedesktop.org files..."
+	@install -m644 sweethome3d.xpm $(DESTDIR)$(datadir)/pixmaps
+	@install -m644 sweethome3d.desktop $(DESTDIR)$(datadir)/applications
+
+install-dirs:
+	@echo "installing directories under $(DESTDIR)..."
+	@install -d -m755 $(DESTDIR)$(bindir)
+	@install -d -m755 $(DESTDIR)$(datadir)/java/sweethome3d
