pkgname=vice
pkgver=2.1
pkgrel=3
pkgdesc="Versatile Commodore Emulator."
url="http://www.viceteam.org/"
depends=('esd' 'libxv' 'libstdc++' 'readline' 'libxaw' 'libpng>=1.4.1' \
         'libxt' 'bdftopcf' 'mkfontdir' 'libjpeg>=8a' 'libgif>=4.1.6')
makedepends=('xproto')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx --dump 'http://www.viceteam.org/' | grep tar.gz$ | sed -ne 's/.*vice-\(.*\)\.tar.gz/\1/;1 p'"
source=(ftp://ftp.zimmers.net/pub/cbm/crossplatform/emulators/VICE/$pkgname-$pkgver.tar.gz \
	vice-2.1-gcc44.patch)
sha1sums=('0adf7a1d13c7b3af7b8d2d21c17b6dc0f055ff67' \
          '9db442b6fed66c760953b0a2ca5167a1f0f44512')
Fconfopts="$Fconfopts --enable-ethernet --enable-textfield --disable-dependency-tracking"

# optimization OK
