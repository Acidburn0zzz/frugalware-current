# Compiling Time: 0.14 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=nuvolaplayer
pkgver=1.0
pkgrel=1
pkgdesc="Cloud music integration for your Linux desktop"
depends=('libgee' 'libnotify' 'unique1' 'webkit' 'bzip2' 'libuuid')
makedepends=('intltool' 'libgee' 'libsoup' 'unique1' 'webkit' 'libnotify' 'vala')
replaces=('google-music-frame')
provides=('google-music-frame')
conflicts=('google-music-frame')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_launchpad_dirname="nuvola-player"
_F_launchpad_branch="releases-1.x"
Finclude launchpad gnome-scriptlet
up2date="Flasttar https://launchpad.net/nuvola-player/+download"
sha1sums=('10bd12fb26958730d3ec28bee97b5977696bb1e7')

build() {
	Fcd
	./waf configure --prefix=/usr || Fdie
	./waf build || Fdie
	./waf --destdir=$Fdestdir install || Fdie
	Fbuild_gnome_scriptlet
}
