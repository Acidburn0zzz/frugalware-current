pkgname=foobnix
pkgver=2.5.28o
pkgrel=2
pkgdesc="Music Player written in Python, GTK+ and Glade"
depends=('dbus-python' 'gst-plugins-good' 'python-keybinder' 'chardet' \
	'python-simplejson' 'gst-python')
makedepends=('distribute' 'gettext')
url="http://www.foobnix.com"
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Fpkgversep="_"
Finclude gnome-scriptlet
up2date="Flasttar https://launchpad.net/~foobnix-player/+archive/foobnix/+sourcepub/2051862/+listing-archive-extra"
source=(https://launchpad.net/~foobnix-player/+archive/$pkgname/+files/$pkgname$Fpkgversep$pkgver.tar.gz)
_F_cd_path="$pkgname${Fpkgversep}2.5.28"
sha1sums=('0a654fc4580e9886a6b7cea75b87ad569cf32c6d')

build() {
	Fcd
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
	Fbuild_gnome_scriptlet
}
