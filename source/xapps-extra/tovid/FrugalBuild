pkgname=tovid
pkgver=0.28
pkgrel=5
pkgdesc="Tovid is a collection of video disc authoring tools"
url="http://tovid.wikia.com/wiki/Main_Page"
license="GPL"
depends=('wxpython' 'wxpython' 'mplayer' 'mjpegtools>=1.8.0-2' 'ffmpeg' 'imagemagick' \
	'normalize' 'dvdauthor' 'vcdimager' 'libdvdcss' 'lsdvd' 'transcode>=1.0.2-4' 'sox' 'cdrdao')
archs=('i686')
groups=('xapps-extra')
options=('scriptlet')
Finclude sourceforge
up2date="lynx -dump http://prdownloads.sourceforge.net/$pkgname/?sort_by=date\&sort=desc|grep $pkgname-[0-9\.]*\.tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
sha1sums=('4200d883862866f7299639866d85e23e6cc603e7')

build() {
	Fbuild
	Ficonrel icons/*
	Fdesktop "/usr/bin/tovidgui" "/usr/share/pixmaps/tovid.svg" "Qt;Gtk;AudioVideo;"	
}
