pkgname=tovid
pkgver=0.30
pkgrel=2
pkgdesc="Tovid is a collection of video disc authoring tools"
license="GPL"
depends=('wxpython' 'mplayer>=1.0rc1-7' 'mjpegtools>=1.9.0rc2' 'ffmpeg>=20070422' 'imagemagick' 'txt2tags' \
	'normalize' 'dvdauthor' 'vcdimager' 'libdvdcss' 'lsdvd' 'transcode>=1.0.2-5' 'sox' 'cdrdao')
archs=('i686')
groups=('xapps-extra')
options=('scriptlet')
_F_sourceforge_prefix="$pkgname "
Finclude sourceforge
url="http://tovid.wikia.com/wiki/Main_Page"
sha1sums=('70259c55a7da3b9a98fe8136470f5770d0923732')

build() {
	Fbuild
	Ficonrel icons/*
	Fdesktop "/usr/bin/tovidgui" "/usr/share/pixmaps/tovid.svg" "Qt;Gtk;AudioVideo;"	
}
