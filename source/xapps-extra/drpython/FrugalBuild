# Compiling Time: ~0 SBU
# Maintainer: Priyank <priyankmg@gmail.com>
# Contributor: TranzeManiaC <disc-devil@phreaker.net>

pkgname=drpython
pkgver=162
pkgrel=1
pkgdesc="DrPython is a highly customizable, extensible editor/environment for developing programs written in the Python programming Language"
url="http://drpython.sourceforge.net/"
depends=('python' 'wxpython')
makedepends=('unzip')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_sourceforge_ext=".zip"
Finclude sourceforge python
sha1sums=('6f31f3a4c0e62b4bb7e52a1a9134b90d9008eff4')

build(){
	Fbuild
	Frm /usr/bin/postinst.py
	echo "#!/bin/sh"  > $Fdestdir/usr/bin/drpython
	echo "python /$_F_python_libdir/drpython/drpython.py" >> $Fdestdir/usr/bin/drpython
	Ffileschmod /usr/bin/ 755
	Ficon $pkgname-$pkgver/bitmaps/drpython.png
	Fdesktop drpython drpython.png "Development;GTK;"
}
