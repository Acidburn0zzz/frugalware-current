# Compiling Time: 1.06 SBU
# Contributor: Melko <lorddarthfener@gmail.com>
# Maintainer: none

pkgname=qtoctave
pkgver=0.9.1
pkgrel=1
pkgdesc="Qt frontend for octave"
url="http://qtoctave.wordpress.com"
depends=('libuuid' 'libqtscript' 'libqtuitools' 'libqtnetwork' 'libqtsql')
groups=(xapps-extra)
archs=('i686' 'x86_64')
_F_gnome_iconcache="y"
_F_cmake_in_source_build=1
Finclude cmake gnome-scriptlet
up2date="Flasttar $url/download"
source=(${source[@]} http://forja.rediris.es/frs/download.php/1760/$pkgname-$pkgver.tar.bz2)
sha1sums=('1d18058c7549a3f25cd648183db3d99ef755257e')

build(){
	# Avoid Conflicts
	Fcd
	sed -i -e '/qtinfo/d' CMakeLists.txt || Fdie

	CMake_build
	Fbuild_gnome_scriptlet
}

# optimization OK
