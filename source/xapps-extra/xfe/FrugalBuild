pkgname=xfe
pkgver=1.00
pkgrel=1
pkgdesc="X File Explorer (Xfe) is an MS-Explorer like file manager for X."
url="http://roland65.free.fr/xfe/"
depends=('fox')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
sha1sums=('864dc02f7e8c4bed410d61872f71833636fc33e1')

build() {
	Fconf
	Fsed 'CXXFLAGS = -O2' "CXXFLAGS = $CFLAGS" src/Makefile
	make || Fdie
	Fmakeinstall
}

# optimization OK
