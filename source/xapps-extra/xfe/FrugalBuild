pkgname=xfe
pkgver=0.98.1
pkgrel=1
pkgdesc="X File Explorer (Xfe) is an MS-Explorer like file manager for X."
url="http://roland65.free.fr/xfe/"
depends=('fontconfig' 'freetype2' 'fox')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge

build() {
	Fconf
	Fsed 'CXXFLAGS = -O2' "CXXFLAGS = $CFLAGS" src/Makefile
	make || Fdie
	Fmakeinstall
}
sha1sums=('13b106569456ce79043e6916c0c5be5327d04ffd')

# optimization OK
