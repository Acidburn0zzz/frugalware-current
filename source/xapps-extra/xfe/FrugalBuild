pkgname=xfe
pkgver=0.99
pkgrel=1
pkgdesc="X File Explorer (Xfe) is an MS-Explorer like file manager for X."
url="http://roland65.free.fr/xfe/"
depends=('fontconfig' 'freetype2' 'fox')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge

build() {
	Fconf
	Fsed 'CXXFLAGS = -O2' "CXXFLAGS = $CFLAGS" src/Makefile
	make || Fdie
	Fmakeinstall
}
sha1sums=('60707a6751e3d3290d307e184b82e1079a9a0174')

# optimization OK
