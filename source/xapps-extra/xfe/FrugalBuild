pkgname=xfe
pkgver=1.04
pkgrel=1
pkgdesc="X File Explorer (Xfe) is an MS-Explorer like file manager for X."
depends=('fox')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
url="http://roland65.free.fr/xfe/"
sha1sums=('0a81c0a98312f48ba7c1fd208edf53516e743511')

build() {
	Fconf
	Fsed 'CXXFLAGS = -O2' "CXXFLAGS = $CFLAGS" src/Makefile
	make || Fdie
	Fmakeinstall
}

# optimization OK
