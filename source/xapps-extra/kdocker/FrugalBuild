# Compiling Time: 0.02 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=kdocker
pkgver=4.3
pkgrel=1
pkgdesc="Helps you dock any application in the system tray."
depends=('qt4-linguist' 'libxpm' 'libxmu')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
Finclude sourceforge
url="https://launchpad.net/$pkgname"
sha1sums=('6b1e63d17edfd0ed7ef642a7cb161a66244b69c3')

build()
{
	Fcd
	Fsed '/usr/local/share/kdocker' '/usr/share/kdocker' $pkgname.pro
	Fsed '/usr/local/bin' '/usr/bin' $pkgname.pro
	qmake $pkgname.pro || Fdie
	Fmake
	make INSTALL_ROOT=$Fdestdir install
}

# optimization OK
