#!/bin/bash

# get-vbox-additions - gets the VirtualBox additions ISO
# Copyright (C) 2007 Alex Smith <alex@alex-smith.me.uk>

version="1.3.8"

if [ "`whoami`" != "root" ]; then
	echo "Must be run as root!"
	exit 1
fi

echo ":: Downloading Guest Additions for VirtualBox $version ..."

( cd /usr/lib/VirtualBox/additions && wget http://www.virtualbox.org/download/${version}/VBoxGuestAdditions_${version}.iso && mv VBoxGuestAdditions_${version}.iso VBoxGuestAdditions.iso )

echo ":: Done!"

