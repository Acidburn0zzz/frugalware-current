post_install()
{
	depmod -a
	echo -n "updating desktop database..."
	if update-desktop-database > /dev/null 2>&1 ; then
		echo " done."
	else
		echo " failed."
	fi
	chkconfig --add rc.virtualbox
}

post_upgrade()
{
	post_install
}

pre_remove()
{
	chkconfig --del rc.virtualbox
}

post_remove()
{
	depmod -a
}

op=$1
shift
$op $*
