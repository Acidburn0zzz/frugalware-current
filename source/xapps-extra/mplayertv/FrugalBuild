pkgname=mplayertv
pkgver=0.2.1pre8
pkgrel=1
pkgdesc="You can watch TV with mplayerTV under Linux (v4l, v4l2) (uses MPlayer)"
url="http://mplayertv.zer0.hu/"
depends=('perl-gtk2')
groups=('xapps-extra')
archs=('i686')
# no stable releases yet
up2date="lynx -dump $url|grep Devel|sed 's/.*: \(.*\)/\1/'"
source=($url/downloads/mplayerTV-$pkgver.tar.gz mplayertv-0.2.1pre8-perl.diff.bz2)

build()
{
	Fcd mplayerTV-$pkgver
	Fpatchall
	Fexerel /usr/bin/mplayerTV
	Fln mplayerTV /usr/bin/mplayerTVw

	# perl module
	cd MPlayer-0.04
	perl Makefile.PL
	make || return 1
	make test
	Fmakeinstall
}

sha1sums=('b42eb9fa4767e49bb8ac9df5e46e79caf6d12307' \
	  'e3e8a9f815bb1b7a523974870fe6a0eda029ed75')
