pkgname=firefox-webdeveloper
_F_firefox_ext=webdeveloper
_F_firefox_id=c45c406e-ab73-11d8-be73-000a95be3b12
_F_firefox_name="${_F_firefox_ext}_localized.xpi"
pkgver=1.0.2
pkgrel=3
pkgdesc="Adds a menu and a toolbar with various web developer tools."
url="http://chrispederick.com/work/firefox/webdeveloper/"
rodepends=('firefox>=1.5')
groups=('xapps-extra' 'firefox-extensions')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/update_localized.rdf |grep :version|sed -n 's/.*>\(.*\)<.*/\1/;1 p'"
source=($url/${_F_firefox_ext}_localized.xpi chrome.manifest)
Finclude firefox-extension
sha1sums=('615240d732dc146d7bfd37ed7d5c3d31739db349'\
          'ccf8d0328a8963b0b068e0f6a8c2f215ee8862a2')
