pkgname=openldev
pkgver=0.6.1
pkgrel=2
pkgdesc="GUI front-end to various development tools such as gcc, autotools and make"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
url="openldev.sourceforge.net"
depends=('gtk+2' 'gtksourceview' 'vte' 'libgnomeui')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.openldev.org/download.php | grep 'Sources.*openldev-' | sed 's/.*v-\([0-9.]*\).t.*/\1/'"
sha1sums=('277b7a36d9e2da32fc3f44d8f524ed4788f65ac5')
_F_cd_path=$pkgname
