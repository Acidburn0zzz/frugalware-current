# Contributor: jedifox <j3d1f0x@free.fr>

options+=('asneeded')

pkgname=xaralx
pkgver=20071107.g41e2f2e
pkgrel=1
pkgdesc="Xara LX is primarily a vector graphics (drawing and illustration) program"
url="http://www.xaraxtreme.org"
depends=('wxgtk28' 'libxml2' 'libstdc++5' 'gtk+2' 'freetype2' 'libxau' \
           'libxdmcp' 'libxxf86vm' 'expat' 'libxdamage' 'libice' \
           'desktop-file-utils' 'libjpeg-compat' 'pangox-compat')
options=('scriptlet')
_F_desktop_categories="Graphics;VectorGraphics;"
Fconfopts+=" --with-wx-config=wx-config-2.8 --enable-filters --enable-xarlib"
_F_scm_type="git"
_F_scm_url="git://git.gitorious.org/xaralx/xaralx.git"
Finclude scm fw32build
groups=('xapps-extra')
archs=('i686' 'x86_64')

build()
{
	if [ "$CARCH" == "x86_64" ] ; then
		Fw32_build
	else
		Funpack_scm
		Fautoreconf
		Fbuild
	fi
}

# optimization OK
