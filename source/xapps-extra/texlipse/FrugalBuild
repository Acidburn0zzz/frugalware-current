# Compiling Time: 0.01 SBU
# Maintainer: jercel <jercel16@gmail.com>

pkgname=texlipse
Fpkgversep='_'
pkgver=1.3.0
pkgrel=1
pkgdesc="TeXlipse is a plugin that adds Latex support to the Eclipse IDE."
_F_sourceforge_sep="_"
_F_sourceforge_ext="_src.zip"
Finclude sourceforge
url="http://texlipse.sourceforge.net/"
rodepends=('eclipse' 'tetex')
groups=('xapps-extra')
archs=('i686' '!x86_64')
sha1sums=('7aa4fa495e0159e4ecd125853c7bda2e43c9ea30')

build() {
        Fmkdir /usr/lib/eclipse/plugins
	Fcd /plugins/
        cp -R net.sourceforge.texlipse_1.3.0 $Fdestdir/usr/lib/eclipse/plugins
}

