# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=nvdock
pkgver=1.02
pkgrel=2
pkgdesc="NVIDIA Dock is a tray icon for easy management of the settings for NVIDIA video cards"
url="http://www.opsat.net/user/bob/projects/nvdock"
depends=('gtk+2>=2.16.2-2' 'nvidia' 'freetype2' 'libxau>=1.0.4' 'libxdmcp' 'libxdamage>=1.1.1-3' 'libxext>=1.0.5-3' 'libxml2')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | Flasttar"
source=(http://bobmajdakjr.googlecode.com/files/$pkgname-$pkgver.tar.bz2)
sha1sums=('2a640c78d1a3f6150432d37cd74dd8713317b796')

build() {
  Fcd
  Fmake
  Fmkdir usr/bin
  Fexerel build/nvdock usr/bin/nvdock
  Ficonrel data/nvdock.png
  Finstallrel 644 data/nvdock.desktop usr/share/applications/nvdock.desktop
}
