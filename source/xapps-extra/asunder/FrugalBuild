pkgname=asunder
pkgver=0.1.0
pkgrel=1
pkgdesc="Asunder is a graphical CD ripper and encoder"
url="http://ericlathrop.com/asunder/"
depends=('gtk+2' 'vorbis-tools' 'flac' 'lame' 'cdparanoia' 'libcddb')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://ericlathrop.com/asunder/ | grep -m1 Latest | grep -oE '[0-9]+\.[0-9]+\.[0-9]'"
source=(http://ericlathrop.com/asunder/Asunder-$pkgver.tar.bz2)
sha1sums=('bb6589f9e8a671ef3b11234bda6e78a2feefb976')

build() {
	Fcd Asunder-$pkgver
	Fbuild
	Fdesktop asunder amarok.png "AudioVideo;"
}

# optimization OK
