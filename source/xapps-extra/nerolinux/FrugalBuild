# Compiling Time: 0.03 SBU
# Contributor: BMH1980 <bmh1980@frugalware.org>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=nerolinux
pkgver=3.0.0.0
pkgextraver=
pkgrel=1
pkgdesc="Nero for Linux"
url="http://www.nero.com"
license="Nero EULA"
up2date="lynx -dump $url/eng/nerolinux-prog.php?pak=15 |grep rpm |sed -ne 's/.*x-\(.*\)-x.*/\1/;1p' -e s/$pkgextraver//"
groups=('xapps-extra')
archs=('i686' 'x86_64')
backup=('etc/nero/config')
rodepends=('gtk+' 'libxcb' 'libx11')
makedepends=('cpio' 'rpm')
if [ "$CARCH" == "x86_64" ] ; then
    source=(ftp://ftp1.lon.nero.com/software/NeroLINUX/nerolinux-$pkgver-x86_64.rpm)
    sha1sums=('8cff9f55825ee3bfb8ed6e0cd580d25a78477cb2')
    suffix=x86_64
fi
if [ "$CARCH" != "x86_64" ] ; then
    source=(ftp://ftp1.lon.nero.com/software/NeroLINUX/nerolinux-$pkgver-x86.rpm)
    sha1sums=('a2bfa0f56533e4c7bba620b19449ed594df40da7')
    suffix=x86
fi
options=('nobuild' 'nodocs')

build()
{
	rpm2cpio $Fsrcdir/$pkgname-$pkgver$pkgextraver-$suffix.rpm > $Fsrcdir/tmp.cpio || Fdie
	( cd $Fdestdir && cpio -i --make-directories < $Fsrcdir/tmp.cpio ) || Fdie
	_F_desktop_exec="nero"
	_F_desktop_categories="Qt;Gtk;Application;AudioVideo;"
	_F_desktop_icon="/usr/share/nero/images/appicons/nero-icon-128.png"
	Fdesktop2
	find $Fdestdir -type d |xargs chmod 755
	# Fixup for x86_64 lib64 dir problem
	if [ "$CARCH" == "x86_64" ] ; then
	    Fmkdir usr/lib
	    Fmv usr/lib64/* usr/lib/
	    Frm usr/lib64
	fi
}
