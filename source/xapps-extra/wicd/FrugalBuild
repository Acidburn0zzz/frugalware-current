# Compiling time: 0 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=wicd
pkgver=1.6.2
pkgrel=1
pkgdesc="A wired and wireless network manager for Linux"
depends=('dbus-python' 'pygtk' 'dhcp' 'dhcpcd' 'wireless_tools' 'wpa_supplicant'\
	'ethtool' 'python>=2.6' 'urwid' 'python-wpactrl' 'python-iwscan')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_sourceforge_realname="wicd-stable"
Finclude sourceforge gnome-scriptlet
source=($source rc.wicd)
sha1sums=('936a3c6bb05f284afcf5fd03ac0a72b2f212d31f' \
          'a3a925a48b0a25e6415ef7cd7b10b6c3e0dc25de')

build() {
	Fcd
	python ./setup.py configure --no-install-init --no-install-docs --resume=/usr/share/wicd/scripts/ --suspend=/usr/share/wicd/scripts/ --verbose || Fdie
	python ./setup.py build || Fdie
	Fmakeinstall
	Frcd2 wicd
	Fbuild_gnome_scriptlet
}
