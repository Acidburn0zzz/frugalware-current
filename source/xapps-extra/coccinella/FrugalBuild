# Compiling Time: 0.01 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=coccinella
pkgver=0.95.14
pkgrel=1
pkgdesc="A Jabber instant messaging client."
depends=('tk')
groups=('xapps-extra')
archs=('i686')
options=('nodocs' 'nostrip')
Finclude sourceforge
source=(http://heanet.dl.sourceforge.net/sourceforge/coccinella/Coccinella-${pkgver}Src.tar.gz)
sha1sums=('4c036e23f20323248ce61b653d2e6fb0a6016a07')

build()
{
	Fcd Coccinella-${pkgver}Src
	Fmkdir usr/lib/$pkgname usr/share/doc/$pkgname-$pkgver
	cp -Ra * $Fdestdir/usr/lib/$pkgname/
	mv $Fdestdir/usr/lib/$pkgname/{docs,README*,CHANGES*} \
		$Fdestdir/usr/share/doc/$pkgname-$pkgver
	chmod 0755 $Fdestdir/usr/lib/$pkgname/Coccinella.tcl
	Fln /usr/lib/$pkgname/Coccinella.tcl /usr/bin/$pkgname
	Fdesktop "/usr/bin/$pkgname" "/usr/lib/$pkgname/images/$pkgname.ico" "Network;InstantMessaging;"
}
