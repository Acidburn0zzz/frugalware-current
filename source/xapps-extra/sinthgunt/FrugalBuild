pkgname=sinthgunt
pkgver=1.1.0_2
pkgrel=1
pkgdesc="GUI for FFmpeg with more than 100 pre-configured conversion settings"
url="http://code.google.com/p/sinthgunt/"
depends=('python' 'ffmpeg' 'gtk+2')
_F_desktop_icon="/usr/share/sinthgunt/icon.png"
_F_desktop_categories="AudioVideo;AudioVideoEditing;"
options=('scriptlet')
Finclude googlecode
groups=('xapps-extra')
archs=('i686')
sha1sums=('7d391d3824c0e2c1d4481b175410fec641d65a99')
_F_cd_path="./"
build()
{
	Fbuild
	Fwrapper "python /usr/bin/sinthgunt.py" sinthgunt
	Fdesktop2
}