# Compiling Time: 0.44 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qbittorrent
pkgver=1.3.1
pkgrel=2
pkgdesc="A Bittorrent client."
depends=('libtorrent-rasterbar>=0.14.1' 'curl>=7.19.0' 'python>=2.6' \
	'libqtgui>=4.4.1' 'libqtnetwork>=4.4.1' 'libqtxml>=4.4.1' 'libboost-mt>=1.37.0' \
	'zziplib' 'libtool' 'qt4-qdbus>=4.4.1' 'imagemagick>=6.4.8_9')
makedepends=('boost>=1.37.0' 'asio>=1.3')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
url="http://www.qbittorrent.org/"
sha1sums=('57ccfa6febc1d7b8e00d79e9a26b7a88ca5c482c')

build()
{
	Fcd
	Fpatchall
	./configure \
			--with-libtorrent-lib=/usr/lib \
			--with-libtorrent-inc=/usr/include \
			--with-libcurl-lib=/usr/lib \
			--with-libcurl-inc=/usr/include \
			--with-libzzip-inc=/usr/include \
			--with-libzzip-lib=/usr/lib \
			--with-libboost-inc=/usr/include \
			--prefix=/usr \
			--qtdir=/usr \
			--verbose || Fdie
	make || Fdie
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
