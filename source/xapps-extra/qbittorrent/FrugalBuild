# Compiling Time: 0.44 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qbittorrent
pkgver=1.0.0
pkgrel=3
pkgdesc="A Bittorrent client."
depends=('libtorrent-rasterbar>=0.13.1' 'curl>=7.16.1-2' 'python>=2.5' \
	'libqtgui' 'libqtnetwork' 'libqtxml' 'libboost-mt>=1.35.0' \
	'zziplib' 'imagemagick' 'libtool')
makedepends=('boost>=1.35.0' 'asio')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_sourceforge_broken_up2date=1
Finclude sourceforge
url="http://www.qbittorrent.org/"
source=($source frugalware.patch)
sha1sums=('d498f0f537a49b8f7421284127e05af02f62ba1a' \
          'f9f9c655183b3a75b87e3653c421168162818ea1')

build()
{
	Fcd
	Fpatchall
	./configure \
			--with-libtorrent-lib=/usr/lib \
			--with-libtorrent-inc=/usr/include \
			--with-libcurl-lib=/usr/lib \
			--with-libcurl-inc=/usr/include \
			--with-libmagick-inc=/usr/include/ImageMagick \
			--with-libmagick-lib=/usr/lib \
			--with-libzzip-inc=/usr/include \
			--with-libzzip-lib=/usr/lib \
			--with-libboost-inc=/usr/include \
			--prefix=/usr \
			--qtdir=/usr \
			--verbose || Fdie
	make || Fdie
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
