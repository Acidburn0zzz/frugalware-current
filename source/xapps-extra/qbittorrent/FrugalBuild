pkgname=qbittorrent
pkgver=2.7.2
pkgrel=2
pkgdesc="A Bittorrent client."
depends=('libtorrent-rasterbar>=0.15.1' 'libqtgui>=4.7.1' 'libqtnetwork>=4.7.1' 'libqtxml>=4.6.1' 'libqtdbus>=4.7.1'\
	'libboost>=1.46.1' 'libice' 'libxrender' 'libxext' 'geoip' 'libuuid' 'openssl>=1.0.0-3')
makedepends=('boost' 'asio>=1.3')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
url="http://www.qbittorrent.org/"
sha1sums=('fdfec52385187d9895981aeb68b9081b6789362f')

build() {
	Fconf
	Fmake
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

