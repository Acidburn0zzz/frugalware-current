# Compiling Time: 0.44 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qbittorrent
pkgver=0.9.3
pkgrel=4
pkgdesc="A Bittorrent client."
depends=('rblibtorrent>=0.12-6' 'curl>=7.16.1-2' 'python>=2.5' 'libqtgui' 'libqtnetwork' 'libboost-mt>=1.34.1')
makedepends=('boost>=1.34.1')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_sourceforge_broken_up2date=1
Finclude sourceforge
url="http://www.qbittorrent.org/"
source=($source frugalware.patch)
sha1sums=('b8ebe28a3ce6c0d789b50faf56197e8df891191a' \
          '6c7d05d26e65fd615a3cf2a880b05b0f5c1ca958')

build()
{
	Fcd
	Fpatchall
	./configure \
			--with-libtorrent-lib=/usr/lib/libtorrent \
			--with-libtorrent-inc=/usr/include \
			--with-libcurl-lib=/usr/lib \
			--with-libcurl-inc=/usr/include \
			--prefix=/usr \
			--qtdir=/usr \
			--verbose || Fdie
	make || Fdie				
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
