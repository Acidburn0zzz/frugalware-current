pkgname=qbittorrent
pkgver=2.2.2
pkgrel=1
pkgdesc="A Bittorrent client."
depends=('libtorrent-rasterbar>=0.15.0' 'libqtgui>=4.6.1' 'libqtnetwork>=4.6.1' 'libqtxml>=4.6.1' \
	'libboost-mt>=1.37.0' 'libice' 'libxrender' 'libxext' 'geoip' 'libuuid')
makedepends=('boost>=1.37.0' 'asio>=1.3')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
url="http://www.qbittorrent.org/"
sha1sums=('cb12f934f6c61c78f71b7afce065442d77e6dc9c')
Fconfopts="${Fconfopts[@]} --disable-libnotify --with-libboost-inc=/usr/include \
			--qtdir=/usr \
			--verbose"

build() {
	Fconf
	Fmake
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
