pkgname=frogr
pkgver=0.2
pkgrel=2
pkgdesc="A flickr remote organizer"
depends=('gtk+2' 'flickcurl>=1.19-2')
makedepends=('intltool')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
Finclude googlecode gnome-scriptlet
sha1sums=('c577227f884035cbc7e2281ee698ccc8b154ebc4')

build() {
	Fcd
	Fsed "/tmp/" "/usr/" data/frogr.desktop
	Fbuild
	Fbuild_gnome_scriptlet
}

# optimization OK
