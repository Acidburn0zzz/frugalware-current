# Compiling Time: 0.01 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=clipgrab
pkgver=3.1.3.0
pkgrel=1
pkgdesc="ClipGrab is a free downloader and converter for YouTube, Vimeo, Dailymotion and many other online video sites."
url="http://clipgrab.de/en"
depends=('qt4' 'ffmpeg' 'xdg-utils')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=(http://clipgrab.de/download/$pkgname-$pkgver.tar.bz2)
sha1sums=('e30b881f2f0c0c45763de52774f9dd594ecad87f')

_F_desktop_name="ClipGrab"
_F_desktop_icon="/usr/share/pixmaps/clipgrab.png"
_F_desktop_categories="AudioVideo"

build() {
	Fcd
	qmake || Fdie
	make || Fdie
	Fexerel $pkgname /usr/bin/$pkgname
	mv icon.png $pkgname.png
	Ficonrel $pkgname.png
	Fdesktop2
}
