# Compiling Time: 0.01 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=phex
pkgver=2.8.10.98
pkgrel=1
pkgdesc="Phex is a p2p filesharing program running on gnutella network."
_F_sourceforge_prefix="Phex "
_F_sourceforge_ext=".zip"
Finclude sourceforge
rodepends=('j2re')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.phex.org/mambo/ | grep Stable | sed 's/.*]\(.*\).*/\1/'"
source=(${source/$pkgname-/${pkgname}_})
sha1sums=('88d69d39c855dcd8a573ed713abbb001357a04a0')

build()
{
	Fmkdir usr/{bin,lib/$pkgname,share/doc/$pkgname}
	
	Fcd $pkgname'_'$pkgver
	cp *.jar $Fdestdir/usr/lib/$pkgname/
	chmod 644 $Fdestdir/usr/lib/$pkgname/*.*
	
	# Generate executable
	echo '#!/bin/sh' > $Fdestdir/usr/bin/phex
	echo 'java -jar /usr/lib/phex/phex.jar' >> $Fdestdir/usr/bin/phex
	chmod 755 $Fdestdir/usr/bin/phex

	# Copy documentation
	cp docs/readme/*.htm $Fdestdir/usr/share/doc/$pkgname
	cp docs/license/GPL.txt $Fdestdir/usr/share/doc/$pkgname 
}
