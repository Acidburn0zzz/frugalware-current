pkgname=opera
pkgver=9.01
pkgextraver=20060728.1-static-qt.i386-en
pkgrel=1
pkgdesc="Opera web browser."
url="http://www.opera.com/linux/"
depends=('qt' 'libgcc' 'lesstif')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump ftp://ftp.opera.com/pub/opera/linux/ |grep -wo opera.*[0-9][0-9][0-9] |sort -r | sed -ne 's|.*x/\(.*\)|\1|;s/\([0-9]\)/\1./;1 p'"
source=(ftp://ftp.opera.com/pub/opera/linux/901/final/en/i386/static/opera-$pkgver-$pkgextraver.tar.bz2)
sha1sums=('ae1db776e1f8b75c389f1566ac1cb69cee16f35f')
options=('nobuild' 'nodocs')

build()
{
	Fcd $pkgname-$pkgver-$pkgextraver-400
	./install.sh --prefix=/usr --DESTDIR=$Fdestdir || Fdie
}
