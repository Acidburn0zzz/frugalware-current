# Compiling Time: 3.97 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=zulucrypt
_F_archive_name="zuluCrypt"
pkgver=4.9.0
pkgrel=1
pkgdesc="A cli and GUI front end to cryptsetup"
url="https://github.com/mhogomchungu/zuluCrypt"
depends=('tcplay' 'cryptsetup-luks>=1.6.3-3' 'qt5-base' 'libpwquality' 'libsecret')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/releases"
source=($url/releases/download/$pkgver/${_F_archive_name}-${pkgver}.tar.bz2)
_F_gnome_iconcache="y"
Finclude cmake gnome-scriptlet
# unset buildflags
unset CFLAGS
unset CXXFLAGS
unset LDFLAGS
unset MAKEFLAGS
sha1sums=('558ad88b6556fe74d8f1f7799a0b11d16698dcc6')

build() {
	CMake_build -DLIB_SUFFIX=lib -DQT5=true
	Fbuild_gnome_scriptlet
}

# optimization OK
