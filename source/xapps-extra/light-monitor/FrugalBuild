# Compiling Time: 0.07 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=light-monitor
pkgver=v1.6
pkgrel=1
pkgdesc="light-monitor is a transparent panel with dependency only on X and Xft for 40Ko."
url="http://www.dixsous.org/index.php?monitor"
depends=('libxft' 'libx11' 'libxpm')
groups=('xapps-extra')
archs=('i686' 'x86_64')
backup=('etc/light-monitor.conf')
up2date="lynx --dump http://www.dixsous.org/download/ | grep $pkgname | Flasttgz"
source=(http://www.dixsous.org/download//$pkgname-$pkgver.tgz \
	makefile-fixes.patch)
sha1sums=('7976001d6a4bd3743f01fecb28c7a2798c60416d' \
          '6cf83c0f2d95b4f54effe845d3e3ef3ec9ccf117')

build() {
	Fbuild
	Fdoc $pkgname-$pkgver/gpl.txt
}

# optimization OK
