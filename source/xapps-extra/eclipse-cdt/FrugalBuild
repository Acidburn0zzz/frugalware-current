# Compiling Time: 0.01 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=eclipse-cdt
pkgver=3.1.2
pkgrel=1
pkgdesc="Eclipse C/C++ Development Tooling - CDT SDK Feature"
url="http://eclipse.org/cdt/"
depends=()
rodepends=('eclipse')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://www.eclipse.org/cdt/downloads.php |grep dist |sed -ne 's/.*dist\/\(.*\)/\1/;$ p'"
source=(http://eclipse.gabriel.co.hu/tools/cdt/releases/callisto/dist/$pkgver/org.eclipse.cdt.sdk-$pkgver-linux.x86.tar.gz)
ECLIPSE_DIR=/usr/lib/eclipse

build() {
	Fcd eclipse
	Fmkdir $ECLIPSE_DIR
	mv plugins features $Fdestdir/$ECLIPSE_DIR || Fdie
}
sha1sums=('ee4187de74f06241e9c55677e4d394f007fbb646')
