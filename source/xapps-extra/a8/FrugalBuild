# Compiling Time: 0.01 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=a8
pkgver=0.2
pkgrel=1
pkgdesc="The Abominade IDE"
rodepends=('python-psutil' 'argparse' 'python-logbook' 'pygtkhelpers' 'vte-python')
makedepends=('python-distribute')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude pypi
_F_desktop_icon="/usr/share/pixmaps/a8.png"
_F_desktop_categories="Development"
sha1sums=('c6ead24c09aad5c591b9985dc8665e241c214250')

build() {
	Fcd
	Fmkdir usr/share/{a8,pixmaps}
	python setup.py install --root=$Fdestdir --optimize=1 || Fdie
	cp -R a8/data/* $Fdestdir/usr/share/$pkgname/ || Fdie
	Fln /usr/share/$pkgname/icons/a8.png /usr/share/pixmaps/$pkgname.png
	Fdesktop2
}
