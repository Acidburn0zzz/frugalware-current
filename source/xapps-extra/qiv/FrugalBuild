# Compiling Time: 0.01 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=qiv
pkgver=2.0
pkgrel=1
pkgdesc="Quick Image Viewer (qiv) is a very small and pretty fast GDK/Imlib image viewer"
url="http://www.klografx.net/qiv/"
depends=('imlib')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url/download/ | grep -m1 Version | sed 's/.*n \(.*\) .*-.*/\1/'"
source=(http://www.klografx.net/$pkgname/download/$pkgname-$pkgver-src.tgz)
sha1sums=('46eef04c492b9f01d79eab7c2fec78b4edd13550')

build() {
	Fcd
	Fmake
	Fmkdir usr/{bin,man/man1}
	Fexerel qiv usr/bin/qiv
	Ffilerel qiv.1 usr/man/man1/qiv.1
}

# optimization OK
