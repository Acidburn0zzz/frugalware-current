# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=fotoxx
pkgver=4.7
pkgrel=1
pkgdesc="A program for improving image files made with a digital camera"
url="http://www.kornelix.com/$pkgname/"
depends=('gtk+2' 'freetype2' 'libxau' 'libxdmcp' 'libstdc++' 'libxdamage' 'libxext' 'libxml2' 'exiv2')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.kornelix.com/downloadpage | Flasttar"
source=(http://www.kornelix.com/$pkgname-$pkgver.tar.gz)
_F_cd_path="$pkgname"
sha1sums=('20919a4774895f0f2a3e9c2670cde66b4cbed2a8')
replaces=('fotox')

build()
{
  Fcd
  export PREFIX=/usr Fmake
  Fmakeinstall
  Fmkdir usr/share/applications/
  make LAUNCHER=$Fdestdir/usr/share/applications/$pkgname.desktop launcher || Fdie
}
