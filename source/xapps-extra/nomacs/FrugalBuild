# Compiling Time: 0.60 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=nomacs
pkgver=3.2.0
pkgrel=1
pkgdesc="Small and fast image viewer."
depends=('exiv2>=0.25-6' 'libraw>=0.17' 'opencv>=3.1.0-6' 'qt5-svg')
makedepends=('qt5-tools')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_github_tag='y'
Finclude github cmake
_F_cd_path="${pkgname}-${pkgver}/ImageLounge"
sha1sums=('b58e3e143356d8365592acb7660f4e768d72e284')

build() {
	Fcd
	Fsed 'OpenCV 2.1.0' 'OpenCV 3.1.0' cmake/Unix.cmake
	CMake_build
}

# optimization OK
