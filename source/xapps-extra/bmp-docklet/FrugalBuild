pkgname=bmp-docklet
pkgver=1.3
pkgrel=1
pkgdesc="bmp-docklet is a plugin for the Beep Media Player. It displays an icon in your systemtray and allows several tasks like play/pause or hide and unhide the player. It displays also the title of the current song as tooltips."
url="http://mark.xnull.de/bmp-docklet.php"
depends=('perl-xml' 'gtk+2' 'bmp')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep -m1 $pkgname | sed 's/.*t \(.*\).*/\1/'"
source=(http://mark.xnull.de/bmp-docklet/$pkgname-$pkgver.tar.bz2)
sha1sums=('8dae5ca29350ddc86e627fdf83d6b7336ac089c6')

