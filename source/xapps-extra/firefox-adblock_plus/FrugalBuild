_F_firefox_name="$_F_firefox_ext-$pkgver-fx+sm+tb+fn.xpi"
_F_firefox_id="d10d0bf8-f5b5-c8b4-a8b2-2b9879e08c5d"
pkgdesc="Firefox extension designed to make ads a thing of the past."
