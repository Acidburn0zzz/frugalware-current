pkgver=0.7.5.5
pkgrel=1
_F_firefox_ext="adblock_plus"
_F_firefox_name="$_F_firefox_ext-$pkgver-fx+tb+sm.xpi"
_F_firefox_id="d10d0bf8-f5b5-c8b4-a8b2-2b9879e08c5d"
pkgdesc="Firefox extension designed to make ads a thing of the past."
url="https://addons.mozilla.org/en-US/firefox/addon/1865"
up2date="elinks -dump '$url' | grep -o '$_F_firefox_ext-\(.*\)-fx+tb+sm.xpi' | sed 's|$_F_firefox_ext-\(.*\)-fx+tb+sm.xpi|\1|'"
Finclude firefox-extension
source=(https://addons.mozilla.org/en-US/firefox/downloads/file/30901/$_F_firefox_name)
sha1sums=('514f17e8ace564094954de8abb293843a47c637f')

build()
{
	Fxpiinstall
	Fdirschmod  /usr 755
	Ffileschmod /usr 644
}
