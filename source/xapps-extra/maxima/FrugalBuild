pkgrel=1
pkgdesc="A sophisticated computer algebra system"
url="http://maxima.sourceforge.net/"
license="GPL"
depends=('readline' 'bash' 'cmucl' 'tk' 'glibc')
groups=('xapps-extra')
archs=('i686' '!x86_64')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=4933 | grep Latest | sed 's/.*7]\(.*\)-W.*/\1/' | tail -n1
"
source=(http://heanet.dl.sourceforge.net/sourceforge/maxima/$pkgname-$pkgver.tar.gz \
	maxima.desktop maxima.png README.Frugalware)
sha1sums=('b600e565cb97e572e66417c962d26e5276b5c33c' \
	  '07b089e468510e7061f64d1a0ac29faea3a58f76' \
