# Compiling Time: 0.30 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=lineakd
pkgver=0.8.4
pkgrel=1
pkgdesc="Linux support for Easy Access and Internet Keyboards."
_F_sourceforge_name="lineak"
Finclude sourceforge
url="http://lineak.sourceforge.net/"
depends=('glibc' 'libxext' 'libx11' 'libxt' 'xproto' 'libxkbfile')
groups=('xapps-extra')
archs=('i686')
backup=('etc/lineak/lineakd.conf')
up2date="lynx -dump $url/index.php?nav=download | grep -A1 Latest | sed 's/.*d \(.*\) \[2.*/\1/' | tail -n1"
source=(${source/lineak-/lineakd-} \
	lineakd-0.8.4-defconfig.patch \
	lineakd-0.8.4-manpages.patch \
	README.Frugalware)
sha1sums=('6943bc5849c1a792e2ea0d58211fafeb1e57c201'\
          '420e814a0556166a689f0f9b88c62e0b95a4ae2c'\
          '90838072b8206685dbd8f74249835eb2fcf163a4'\
          '39722943a1c8546a99843d0a8cacd268351447d1')

build()
{
	# Build lineakd
	Fbuild --with-x
	Fmkdir /etc/lineak
	Ffilerel lineakd.conf.example /etc/lineak/
	cd utils
	Fmanrel send_to_keyboard.8 xsendkeycode.8 evtest.1 xsendkeys.8
	Fdoc README.Frugalware
}


# optimization OK
