pkgname=menutray
pkgver=0.3.2
pkgrel=1
pkgdesc="A simple Gtk2 application menu written in Perl"
depends=('perl-gtk2')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_googlecode_dirname="trizen"
Finclude googlecode
sha1sums=('e562d0fbbd7472ee809383998a329dbfc2cdc0bd')

build() {
	Fexe usr/bin/$pkgname
	Fmkdir /usr/share/$pkgname
	Fcp icons/ usr/share/$pkgname
}
