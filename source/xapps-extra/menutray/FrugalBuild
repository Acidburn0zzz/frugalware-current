pkgname=menutray
pkgver=0.3.1
pkgrel=1
pkgdesc="A simple Gtk2 application menu written in Perl"
depends=('perl-gtk2')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_googlecode_dirname="trizen"
Finclude googlecode
sha1sums=('9af839b62c2c52095814995363a5262bdf1a46d9')

build() {
	Fexe usr/bin/$pkgname
	Fmkdir /usr/share/$pkgname
	Fcp icons/ usr/share/$pkgname
}
