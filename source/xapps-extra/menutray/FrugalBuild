pkgname=menutray
pkgver=0.3.0
pkgrel=1
pkgdesc="A simple Gtk2 application menu written in Perl"
depends=('perl-gtk2')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_googlecode_dirname="trizen"
Finclude googlecode
sha1sums=('2f431ecf7a6368f8c2af36308f690a9bca96fcdb')

build() {
	Fexe usr/bin/$pkgname
	Fmkdir /usr/share/$pkgname
	Fcp icons/ usr/share/$pkgname
}
