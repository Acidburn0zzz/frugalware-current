pkgname=xsw
pkgver=0.3.5
pkgrel=1
pkgdesc="A slide show presentation tool."
Finclude googlecode
depends=('sdlimage' 'sdl_ttf' 'sdl_gfx')
groups=('xapps-extra')
archs=('i686')
sha1sums=('fe4cffcc8bcd3149f4ecbf2011ad78a8ab7f1dd4')

build()
{
	Fsed '$1' $Fdestdir'$1' data/install-fonts
	Fbuild
}

