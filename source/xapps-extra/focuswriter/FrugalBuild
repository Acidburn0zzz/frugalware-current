# Compiling Time: 0.24 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=focuswriter
pkgver=1.4.3
pkgrel=1
pkgdesc="A simple fullscreen word processor"
url="http://gottcode.org/focuswriter"
depends=('libqtgui' 'libqtnetwork' 'enchant' 'libzip' 'expat' 'libuuid')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flastarchive $url -src.tar.bz2"
source=($url/$pkgname-$pkgver-src.tar.bz2)
sha1sums=('15c5407f0bb3188f282d26f2799bb9556a539924')

build() {
	Fcd
	qmake PREFIX=/usr || Fdie
	Fmake
	Fmakeinstall INSTALL_ROOT="$Fdestdir"
}

# optimization OK
