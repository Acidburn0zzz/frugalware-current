# Compiling Time: 1.08 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>
# Contributor: kikadf <kikadf.01@gmail.com>

pkgname=otter-browser
pkgver=0.9.11
pkgrel=1
pkgdesc="Otter Browser, project aiming to recreate classic Opera (12.x) UI using Qt5."
depends=('qt5-webengine>=5.7.0-2' 'libgcrypt' 'hunspell' 'qt5-svg>=5.7.0-2' \
	'qt5-imageformats>=5.7.0-2' 'qt5-multimedia>=5.7.0-2' 'qt5-script>=5.7.0-2')
makedepends=('qt5-tools>=5.7.0-2')
_F_github_tag_v="y"
_F_github_author="Emdek"
_F_github_name="otter"
Finclude cmake github
_F_desktop_name="Otter Browser"
_F_desktop_icon="$pkgname.png"
_F_gnome_iconcache="y"
_F_desktop_categories="Network;WebBrowser;"
groups=('xapps-extra')
archs=('x86_64')
sha1sums=('63c37c14e8b4b58c5a9a629ba39b118cbed639f9')
_F_cd_path=otter-browser-$pkgver

build()
{
	Fcd

	## hunspell detection
	Fsed 'hunspell-1.3' 'hunspell-1.4' cmake/FindHunspell.cmake

	CMake_build \
		-DENABLE_QTWEBENGINE=ON \
		-DENABLE_QTWEBKIT=OFF
	Fdesktop2
}

# optimization OK
