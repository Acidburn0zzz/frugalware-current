# Compiling Time: 0.01 SBU
# Maintainer: jercel <jercel16@gmail.com>

pkgname=adeskbar
pkgver=0.1.7.4
pkgrel=1
pkgdesc="A Quick Application Launcher"
url="http://www.ad-comp.be"
depends=('python')
groups=('xapps-extra')
archs=('x86_64' 'i686' 'ppc')
up2date="Flasttarbz2 ${url}/public/projets/ADeskBar/"
source=(http://www.ad-comp.be/public/projets/ADeskBar/$pkgname-$pkgver.tar.bz2)
sha1sums=('29122640ddeb829df6e283cb31222565a8c09d4f')
build()
{
	Fcd
	Fmkdir /usr/share/{adeskbar,pixmaps,applications}
    	cp -a ./src/*  $Fdestdir/usr/share/adeskbar || Fdie
    	cp ./adeskbar.png $Fdestdir/usr/share/pixmaps/adeskbar.png || Fdie
    	cp ./adeskbar.desktop $Fdestdir/usr/share/applications/adeskbar.desktop || Fdie
    	Fln /usr/share/adeskbar/adeskbar /usr/bin/adeskbar
}
