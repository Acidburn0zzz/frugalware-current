# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=mashup
pkgver=3.1
pkgrel=1
pkgdesc="Mashup is a free open source Linux program for making and printing a photo montage."
url="http://kornelix.squarespace.com/$pkgname/"
depends=('gtk+2>=2.20.0-2' 'freetype2' 'libxau>=1.0.4' 'libxdmcp' 'libstdc++' 'libxdamage' 'libxext' 'libxml2>=2.7.8')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://kornelix.squarespace.com/downloads/ | Flasttar"
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('ce25aa90e1990fca3fd3432dd06c5f937661e47b')
replaces=('printoxx')

build() {
  Fcd
  export PREFIX=/usr
  Fmkdir usr/share/applications
  sed -i 's+xdg-deskto+#xdg-deskto+' Makefile || Fdie
  Fmake
  sed -i '8,9d' data/desktop || Fdie
  Finstallrel 644 data/desktop usr/share/applications/$pkgname.desktop
  make MENUFILE1=$Fdestdir/usr/share/applications/$pkgname.desktop \
    DESTDIR=$Fdestdir install || Fdie
  Frm usr/share/applications/kornelix-$pkgname.desktop
}

# optimization OK
