# Compiling Time: 0.02 SBU
# Maintainer: PacMiam <PacMiam@gmx.fr>
# Contributor: bouleetbil <bouleetbil@frogdev.info>

pkgname=lxlauncher
pkgver=0.2.5
pkgdesc="Launcher for Asus EeePC (part of LXDE)"
groups=('xapps-extra')
depends=('gtk+2' 'startup-notification' 'menu-cache')
makedepends=('intltool' 'x11-protos')
rodepends=('lxde-common')
options+=('scriptlet')
_F_lxde_group="lxde-extra"
Finclude lxde
sha1sums=('a0a1e13e0d4f2d03502eddb7d71e77e66b444f92')

build() {
	Fcd
	Fbuild
    	Fdesktop2
    	# For launch on startup
    	Fmkdir etc/xdg/autostart
    	Fmv usr/share/applications/${pkgname}.desktop etc/xdg/autostart/${pkgname}.desktop
}

# optimization OK
