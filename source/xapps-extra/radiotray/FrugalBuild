# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=radiotray
pkgver=0.5
pkgrel=1
pkgdesc="Radio Tray is a streaming player for listening to online radios."
depends=('gst-python' 'pygtk' 'lxml' 'pygobject' 'notify-python')
Finclude sourceforge
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('74f47a668ed9ff5bdbf6081ace02f5f8250f8500')

_F_desktop_name="Radio Tray"
_F_desktop_desc="Streaming music player"
_F_desktop_icon="/usr/share/radiotray/res/radiotray.png"
_F_desktop_categories="AudioVideo;Audio;Player;GTK;"

build() {
  Fcd
  Fmkdir usr
  Fcprel bin usr/
  Fcprel share usr/
  Fdesktop2
  Ffileschmod usr/bin/$pkgname +x
}
