pkgname=radiotray
pkgver=0.4
pkgrel=2
pkgdesc="Radio Tray is a streaming player for listening to online radios."
depends=('gst-python' 'pygtk' 'lxml' 'pygobject' 'notify-python')
Finclude sourceforge
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('f1aa34d44b74c1e5245de7f0258f6fc8b3b9bbf6')

build()	{
	Fbuild
	Fsed "/usr/local" "/usr" $Fdestdir/usr/share/applications/$pkgname.desktop
}
