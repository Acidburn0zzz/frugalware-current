pkgname=radiotray
pkgver=0.3
pkgrel=1
pkgdesc="Radio Tray is a streaming player for listening to online radios."
depends=('gst-python' 'pygtk' 'lxml' 'pygobject' 'pyinotify')
Finclude sourceforge
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('b6a26ab0dbf350ce333398fb1bebf07000baff7d')

build()	{
	Fbuild
	Fsed "/usr/local" "/usr" $Fdestdir/usr/share/applications/$pkgname.desktop
}
