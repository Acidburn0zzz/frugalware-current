# Compiling Time: 0.04 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>
# Contributor: TranzeManiaC <disc-devil@phreaker.net>

pkgname=albumart
pkgver=1.6.0
pkgrel=2
pkgdesc="Album Cover Art Downloader"
url="http://kempele.fi/~skyostil/projects/albumart/"
depends=('python' 'pyqt' 'imaging')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url | grep -m1 Release | sed 's/.*se \(.*\).*/\1/'"
source=($url/dist/$pkgname-$pkgver.tar.gz $pkgname.desktop)
sha1sums=('71be922bc207a9b6d9ae8df10e2611b8e5022faf' \
	'c26436ba9991923bde23790bd2439df368c8fe92')
options=('scriptlet')

build() {
	[ -z "${QTDIR}" ] && . /etc/profile.d/qt.sh
	Fcd
	python setup.py install --prefix=/usr --root=$Fdestdir
	
	# use our custom .desktop so that it works under gnome too
	Fmkdir usr/share/applications
	Ffile albumart.desktop /usr/share/applications/
	Frm /usr/share/applnk
}
