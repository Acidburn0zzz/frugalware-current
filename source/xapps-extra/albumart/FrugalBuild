pkgname=albumart
pkgver=1.6.0
pkgrel=3
pkgdesc="Album Cover Art Downloader."
url="http://kempele.fi/~skyostil/projects/albumart/"
depends=('python' 'pyqt' 'imaging')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep -m1 Release | sed 's/.*se \(.*\).*/\1/'"
source=($url/dist/$pkgname-$pkgver.tar.gz albumart-fix.diff)
options=('scriptlet')
_F_desktop_name="AlbumArt"
_F_desktop_icon="albumart.png"
_F_desktop_exec="albumart-qt"
_F_desktop_categories="Qt;GNOME;KDE;Graphics"
sha1sums=('71be922bc207a9b6d9ae8df10e2611b8e5022faf'\
          '9cad992458cfae0d551aa93fd5729ed96c2969ca')

build()
{
	Fcd
	Fpatchall
	python setup.py install --prefix=/usr --root=$Fdestdir

	# use our custom .desktop so that it works under gnome too
	Fdesktop2
	Frm /usr/share/applnk
}
