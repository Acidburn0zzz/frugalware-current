	fix_cmake_bailout.patch)
sha1sums=('d0e763d801a24ea328f31621f1fb4a1b45aed58e' \
          'ea70ed632c2794b5a15b23d836461402b80ba61c')
_F_cmake_type="Release"
Finclude cmake

build()
{
	CMake_build
	Fln /usr/lib/libdbusmenu-glib.so /usr/lib/libdbusmenu-glib.so.3
}

