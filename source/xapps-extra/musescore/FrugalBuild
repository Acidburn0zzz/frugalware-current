# Compiling Time: 2.25 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=musescore
pkgver=1.1
pkgrel=1
pkgdesc="A music score editor written in Qt"
url="http://www.musescore.org/en"
depends=('qt4' 'libsndfile')
makedepends=('cmake')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_sourceforge_name="mscore"
_F_sourceforge_dirname="mscore"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
source=($source fix-casting.patch)
sha1sums=('a4e3963b995bbadf0f9a9ecdb6134d58414fd6cc' \
          'e8f9e77a9a13116193189e76275a6e3ce5b707d4')

build() {
	Fcd
	Fpatchall
	make clean || Fdie
	make PREFIX=/usr release || Fdie
	make DESTDIR=$Fdestdir install || Fdie
}
