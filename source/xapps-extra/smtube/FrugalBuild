# Contributor: Slown <slown@frugalware.org>
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname=smtube
pkgver=15.11.0
pkgrel=1
pkgdesc="Search and download video from YouTube. Based on smplayer."
rodepends=('smplayer')
depends=('qt5-script' 'qt5-webkit')
makedepends=('qt5-tools')
replaces=('smtube2' 'smtube-base')
conflicts=("${replaces[@]}")
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_sourceforge_dirname="smplayer"
_F_sourceforge_ext=".tar.bz2"
_F_sourceforge_rss_limit="350"
Finclude sourceforge gnome-scriptlet
sha1sums=('00ac3fc451e0d9d656ac522100fc66211f681758')

build() {
	Fcd
	Fsed '/usr/local' '/usr' Makefile
	Fsed "/share/doc/smtube" "/share/doc/smtube-$pkgver" Makefile
	Fsed 'QMAKE=qmake' 'QMAKE=qmake\-qt5' Makefile
	Fsed 'LRELEASE=lrelease' 'LRELEASE=lrelease\-qt5' Makefile
	Fbuild
	Fbuild_gnome_scriptlet
}

# optimization OK
