pkgname=gimmix
pkgver=0.1b
pkgrel=1
pkgdesc="Gimmix is a GUI MPD client written in C"
url="http://priyank.one09.net/index.php?page=gimmix"
depends=('gtk+2>=2.10.6' 'libglade' 'libnotify' 'libmpd>=0.12.0' 'confuse')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url | Flasttarbz2"
source=(http://priyank.one09.net/gimmix/releases/gimmix-0.1b.tar.bz2)
sha1sums=('478419708766aeb36ff87fb9ea263fb2f6993249')

build()
{
    Fmake
    make PREFIX=$Fdestdir/usr install
}

# optimization OK
