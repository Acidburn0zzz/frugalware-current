# Compiling Time: 0.05 SBU
# Maintainer: Melko <melko@frugalware.org>

options+=('asneeded')

pkgname=spyder
pkgver=2.1.13
pkgrel=1
pkgdesc="Interactive development environment for the Python."
depends=('pyqt4')
makedepends=('python-sphinx')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_googlecode_ext=".zip"
_F_googlecode_dirname="spyderlib"
_F_archive_grepv="beta"
Finclude googlecode
source=("${source[@]}" qt_version_check.patch)
sha1sums=('15c66a0abce6c94d57d5cc21cbcf32cceb037bd7' \
          '69c6a80e1d169b4b26ab78fe929cd6da161e0fa6')

build() {
	Fbuild
	Ffile $pkgname-$pkgver/scripts/$pkgname.desktop usr/share/applications/$pkgname.desktop
}
