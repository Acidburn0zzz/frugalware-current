# Compiling Time: 0.09 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=pspvc
pkgver=0.2.1
pkgrel=1
pkgdesc="PlayStation Portable Video Converter."
url="http://pspvc.sourceforge.net/"
depends=('gtk+2' 'atk' 'pango' 'ffmpeg' 'nasm')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://pspvc.sourceforge.net/#download|grep -m1 '.tar.gz'|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-install-$pkgver.tar.gz)
sha1sums=('5c16112faf4da82c561c21d53c11b0d85cf94e37')

build()
{
	Fcd $pkgname-install-$pkgver/archives
	## I do hate such 'devels' WTF man
	tar -xf $pkgname-$pkgver.tar.gz || return 1
	cd $pkgname-$pkgver
	Fbuild
	Fdesktop "/usr/bin/$pkgname" \
		"/usr/share/pixmaps/pspvc_logo.png" \
		"GNOME;KDE;GTK;Multimedia;AudioVideo;Video;"
}


# optimization OK
