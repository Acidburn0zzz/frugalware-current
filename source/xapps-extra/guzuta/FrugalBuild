pkgname=guzuta
pkgver=0.0.4
pkgrel=2
pkgdesc="A PyGtk front end to ArchLinux's package manager, pacman"
Finclude berlios
url="http://guzuta.berlios.de/"
license="GPL2"
source=($source guzuta-0.0.4-python25.diff)
sha1sums=('017c8e327c3eb747760df7f7b5686e2b6ec8f37f' \
	  'c9bdc01f83c6e3e5987231fd648ca47e73393e92')
groups=('xapps-extra')
archs=('i686' 'x86_64')
depends=('pygtk')
options=('scriptlet')

build()
{
	Fbuild
	Fmv /opt/gnome/share/applications /usr/share/applications
	Fmv /opt/kde/share/applications/kde /usr/share/applications/kde
	Frm /opt
}

# optimization OK
