# Compiling Time: 0.10 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=amsn
pkgver=0.97RC1
pkgrel=2
pkgdesc="AMsN is a great messanger client"
depends=('libice' 'libjpeg' 'libx11' 'libsm' 'libstdc++' 'libpng' 'tk>=8.5')
rodepends=('tls')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
source=($source amsn.patch)
sha1sums=('bcc8166b82ee8997c1673d9f2b084ab5679f86d7' \
          '97a871735cefde7e7d8bdc575ed91bb2700c7f4d')

build()
{
	Fcd
	find . -type f -exec sed -i 's/{expand}/{\*}/g' {} \;
	Fbuild
	Frm usr/bin/amsn  usr/bin/amsn-remote  usr/bin/amsn-remote-CLI
	for i in amsn amsn-remote amsn-remote-CLI
	do
		Fln /usr/share/amsn/$i /usr/bin/$i
	done
}

