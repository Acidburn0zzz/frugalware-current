# Compiling Time: 0.24 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: Shrift <shrift@frugalware.org>
# Modified by BMH1980 <bmh1980@frugalware.org>

pkgname=amsn
pkgver=0.95
pkgrel=1
pkgdesc="AMsN is a great messanger client"
url="http://amsn.sourceforge.net"
depends=('tk')
rodepends=('tls')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
sha1sums=('95658c4255ccd33018f07728a7d8274f9764da9a')

build()
{
	# Base install
	Fmake
	make INSTALL_PREFIX=$Fdestdir rpm-install || return 1
	# Install extra files
	Ffilerel /usr/share/applications/$pkgname.desktop
	Ffilerel icons/32x32/msn.png /usr/share/pixmaps/msn.png
	# Docs
	Fmkdir /usr/share/doc
	Fmv /usr/share/$pkgname /usr/share/doc/$pkgname-$pkgver
	Fdocrel AGREEMENT GNUGPL HELP remote.help
	Fln /usr/share/doc/$pkgname-$pkgver /usr/share/$pkgname
	# Cleaning up
	Frm /usr/share/$pkgname/{$pkgname.desktop,CREDITS,FAQ,GNUGPL,HELP}
	Frm /usr/share/$pkgname/{INSTALL,README,remote.help,TODO}
}

