# Compiling Time: 0.13 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=gbindadmin
pkgver=0.1.5
pkgrel=1
pkgdesc="An easy to use GTK+ administration tool for BIND"
url="http://www.gadmintools.org/"
depends=('gtk+2' 'freetype2' 'libxcb' 'glib2' 'bind')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://mange.dynalias.org/linux/gbindadmin/|Flasttar"
source=(http://mange.dynalias.org/linux/$pkgname/$pkgname-$pkgver.tar.gz $pkgname.desktop $pkgname.desktop.kde)

build()
{
	Fbuild
	Fexerel ../$pkgname.desktop.kde /usr/share/applications/kde/gbindadmin.desktop
	Fexerel ../$pkgname.desktop /usr/share/applications/gbindadmin.desktop
}

sha1sums=('48f31d197d8b339ef02caa2d2223951663300980'\
          '1ca7f3d22ee80944a6ff90ed4e28ccfeeda4b951'\
          'ad7cf4af1bb30da402623a38cd8ff606c3991573')
# optimization OK
