# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>
# Contributor: James Buren <flakeroats@hotmail.com>

pkgname=xmix
pkgver=2.1
pkgrel=1
pkgdesc="xaw program for configuring ALSA/OSS"
url="http://freshmeat.net/projects/xmix/"
depends=('libxaw' 'libxext' 'glibc' 'libsm')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump '$url' | Flasttar"
source=(http://freshmeat.net/redir/$pkgname/47834/url_bz2/$pkgname-$pkgver.tar.bz2)
sha1sums=('10b2afce4969d8887f3a5d6fa107e4820aa0309c')

build()
{
	Fcd $pkgname
	make clean || return 1
	make CCOPTIONS="-DNO_ASM $CFLAGS" || return 1
	Fexerel xmix
	Ffilerel /usr/share/xmix/XMix
}

# optimization OK
