pkgname=stellarium
pkgver=0.15.2
pkgrel=1
pkgdesc="A free open source planetarium for your computer."
url="http://www.stellarium.org/"
depends=('qt5-script' 'qt5-serialport' 'qt5-multimedia')
makedepends=('qt5-tools')
_F_gnome_iconcache="y"
groups=('xapps-extra')
archs=('x86_64')
Finclude cmake sourceforge gnome-scriptlet
