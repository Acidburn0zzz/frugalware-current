# Compiling Time: 0.06 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=fwbuilder
pkgver=2.1.10
pkgrel=1
pkgdesc="Firewall Builder firewall configuration system"
Finclude sourceforge
url="http://www.fwbuilder.org"
depends=("libfwbuilder=$pkgver")
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.fwbuilder.org/archives/cat_release_notes.html | grep -m1 'Version' | sed 's/Version //g'"
options=('scriptlet')
sha1sums=('811c66eac219cf2cedd6a1c2676b83e34c1a144a')

build() {
	Fmake
	make INSTALL_ROOT=$Fdestdir install
}

# optimization OK
