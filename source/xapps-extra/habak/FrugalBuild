up2date="lynx -dump "http://developer.berlios.de/project/showfiles.php?group_id=1595"|grep $pkgname-[0-9\.]*\.tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://download.berlios.de/fvwm-crystal/$pkgname-$pkgver.tar.gz)
