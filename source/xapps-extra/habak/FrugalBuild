pkgver=0.2.5
pkgrel=1
pkgdesc="habak - utility for creating multi-layered backgrounds in X11"
url="http://lubuska.zapto.org/~hoppke/yellow_brown/index.html"
license="GPL"
depends=('freetype2' 'libxext' 'imlib2')
