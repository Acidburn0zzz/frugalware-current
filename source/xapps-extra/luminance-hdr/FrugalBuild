# Compiling Time: 1.01 SBU
# Maintainer: Melko <lorddarthfener@gmail.com>

pkgname=luminance-hdr
pkgver=2.0.2
pkgrel=1
pkgdesc="an open source graphical user interface application that aims to provide a workflow for HDR imaging"
archs=('i686' 'x86_64')
groups=('xapps-extra')
_F_archive_grepv="pre"
depends=('exiv2' 'openexr' 'libgomp' 'fftw' 'gsl' 'libqtwebkit' 'libraw')
replaces=('luminance')
_F_sourceforge_dirname="qtpfsgui"
_F_gnome_iconcache="y"
Finclude sourceforge gnome-scriptlet
sha1sums=('52e14d0efee7e5673e4b33bdcb5b52ead8688c61')
_F_cd_path=LuminanceHDR-$pkgver

build() {
  Fcd
  qmake PREFIX=/usr || Fdie
  Fmake
  make INSTALL_ROOT=${Fdestdir} install || Fdie
  Fbuild_gnome_scriptlet
}

# optimization OK
