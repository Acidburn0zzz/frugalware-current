# Compiling Time: ~0.65 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: BMH1980 <bmh1980@frugalware.org>

pkgname=dvdstyler
pkgver=1.7.0
pkgrel=1
pkgdesc="DVDStyler is a crossplatform dvd authoring system."
_F_sourceforge_dirname="dvdstyler"
_F_sourceforge_name="DVDStyler"
Finclude sourceforge
url="http://www.dvdstyler.de"
makedepends=('dvdauthor' 'netpbm')
depends=('mpgtx' 'wxgtk>=2.8.1' 'mjpegtools>=1.9.0rc3' 'cdrtools' 'dvd+rw-tools' 'wxsvg>=1.0b11' 'libexif' 'ffmpeg>=20080427')
license="GPL2"
source=(http://$_F_sourceforge_mirror.dl.sourceforge.net/sourceforge/dvdstyler/DVDStyler-${pkgver}.tar.bz2)
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('d6c8c6ebfd65fe8fa29f2b7ffb7d59c86df814ad')

build()
{
	unset MAKEFLAGS
	Fcd DVDStyler-${pkgver}
	touch NEWS || Fdie
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
	# twice there
	Frm usr/share/doc/dvdstyler
}

# optimization OK
