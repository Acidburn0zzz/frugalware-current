pkgname=ukopp
pkgver=3.4.1
pkgrel=2
pkgdesc="Ukopp is used to copy or back-up disk files to a disk or disk-like device, such as a USB stick."
url="http://kornelix.squarespace.com/$pkgname/"
depends=('gtk+2>=2.16.2-2' 'libxau>=1.0.4-1' 'libxdmcp' 'libstdc++' 'libxext' 'libxdamage' 'libxml2')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://kornelix.squarespace.com/downloads/ | Flasttar"
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('ead2ab5b2b78f5a24cfb4dd937745a0f11d0a290')

_F_desktop_name="Ukopp"
_F_desktop_desc="Copy Files to a disk-like device"
_F_desktop_icon="/usr/share/ukopp/icons/ukopp.png"
_F_desktop_categories="Utility"

build()
{
  Fcd
  export PREFIX=/usr
  Fsed "@xdg-desktop-menu" "#@xdg-desktop-menu" Makefile
  Fmake
  Fmakeinstall
  Fmkdir usr/share/applications/
  #"make LAUNCHER" doesn't work for now
  #make LAUNCHER=$Fdestdir/usr/share/applications/$pkgname.desktop launcher || Fdie
  Fdesktop2
}
