# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=ukopp
pkgver=3.6
pkgrel=1
pkgdesc="Ukopp is used to copy or back-up disk files to a disk or disk-like device, such as a USB stick."
url="http://kornelix.squarespace.com/$pkgname/"
depends=('gtk+2>=2.16.2-2' 'libxau>=1.0.4-1' 'libxdmcp' 'libstdc++' 'libxext' 'libxdamage' 'libxml2')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://kornelix.squarespace.com/downloads/ | Flasttar"
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz Makefile)
sha1sums=('f7b134c172eb6eaf13f09e9158e02f7348a06015' \
          'e89c7977a0bb68d26cdb6def3f5fad1f4a9d25d2')

build() {
  Fcd
  cp $Fsrcdir/Makefile . || Fdie
  Fmake
  Fmkdir usr/share/applications
  Fmakeinstall
}
