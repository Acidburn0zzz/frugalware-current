# Compiling Time: 0.01 SBU
# Maintainer: Anthony Jorion <pingax@frugalware.org>
# Contributor: Devil505 <devil505linux@gmail.com>

pkgname=ukopp
pkgver=5.8
pkgrel=1
pkgdesc="Ukopp is used to copy or back-up disk files to a disk or disk-like \
  device, such as a USB stick."
url="http://www.kornelix.net/$pkgname/"
depends=('gtk+3' 'libxau>=1.0.4-1' 'libxdmcp' 'libstdc++' 'libxext' 'libxdamage' \
  'libxml2>=2.7.8')
makedepends=('x11-protos')
options=('scriptlet')
groups=('xapps-extra')
archs=('x86_64')
up2date="Flasttar http://kornelix.net/downloads/downloads.html"
source="http://kornelix.net/downloads/tarballs/$pkgname-$pkgver.tar.gz"
sha1sums=('564b6e5d8c8e135e8d22952984488a7207e9adaf')

build() {
	Fcd
	export PREFIX=/usr
  	Fmkdir usr/share/applications
	Fexec sed -i 's+xdg-deskto+#xdg-deskto+' Makefile || Fdie
	Fmake
	Fmakeinstall
	Finstallrel 644 desktop usr/share/applications/$pkgname.desktop
	## what? - crazy -
	Frm usr/share/applications/kornelix-$pkgname.desktop
	Frm usr/share/doc/$pkgname/$pkgname.man
}

# optimization OK
