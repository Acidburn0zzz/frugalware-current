pkgname=hgview
pkgver=1.9.0
pkgrel=1
pkgdesc="A fast Mercurial log navigator"
url="http://www.logilab.org/project/hgview"
archs=('i686' 'x86_64')
groups=('xapps-extra')
depends=('qscintilla2-python-qt4' 'pygments' 'urwid' 'pyinotify' 'mercurial>=1.6')
makedepends=('xmlto' 'asciidoc' 'icu4c')
Finclude pypi
source=(https://pypi.python.org/packages/dd/42/a70bcd09b92c99bc38546b847d9517fd0adede2d0146099b6740f1cb2499/hgview-1.9.0.tar.gz $pkgname.png)
sha1sums=('e8021b40a09f63d7f829f127982097a7f81143af' \
          '0c6bf9abdbc48fe4f869938d2a0c7c228a27679e')
_F_desktop_name="Hgview"
_F_desktop_icon="$pkgname.png"
_F_desktop_exec="hgview"
_F_desktop_categories="Development"

build()
{
	Fcd
	python setup.py build --no-doc # Issue with xml validation
	python setup.py install -O1 --skip-build --no-doc --root=$Fdestdir
	Ficon $pkgname.png
	Fdesktop2
}
