pkgname=xchat-systray-integration
pkgver=2.4.5
pkgrel=3
pkgdesc="Systray integration for xchat"
url="http://www.blight.tk/"
depends=('xchat')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=88437 | grep -m 2 systray-plugin- | sed 's/ //g'|sed 's/.*in-//g'|sed 's/.....N.*//g'|sed 's/.*20..//g'|sed -e '/^$/d'"
source=(http://heanet.dl.sourceforge.net/sourceforge/xchat2-plugins/$pkgname-$pkgver-src.tar.gz)
sha1sums=('d7bad0f60c1944ce385e5799eb08a45a081365ab')

build()
{
	Fcd
	[ "$CARCH" == "x86_64" ] && CFLAGS="$CFLAGS -fPIC -DPIC"
	Fsed "CFLAGS = .*" "CFLAGS=${CFLAGS}" Makefile
	Fmake
	Fmakeinstall
	chmod -x $Fdestdir/usr/lib/xchat/plugins/{GTKTray,Menu,Win32Tray}/*
}

# optimalization OK
