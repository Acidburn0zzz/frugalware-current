pkgname=libetpan
pkgver=0.50
pkgrel=1
pkgdesc="A mail library"
url="http://libetpan.sourceforge.net/"
depends=('openssl' 'db>=4.6.18' 'cyrus-sasl' 'glibc')
groups=('lib-extra')
archs=('x86_64' 'i686')
_F_sourceforge_broken_up2date=1
Finclude sourceforge
# Need to remove on next upstream. THis buildfix from SVN backport. -krix
source=(${source[@]} buildfix_backport.patch)
sha1sums=('6bcfe4dc78a563169dac8fac17afde8f67032303' \
          '10595691b0ca580219a39f4a6aa3f1ed7b50b8d8')

build() 
{
	unset MAKEFLAGS
	Fbuild
	# Permission fixup ?!
	chmod +x $Fdestdir/usr/lib/libetpan.so* || Fdie
}

