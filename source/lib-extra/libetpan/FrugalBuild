pkgname=libetpan
pkgver=0.47
pkgrel=1
pkgdesc="a mail library"
url="http://libetpan.sourceforge.net/"
depends=('openssl' 'db>=4.5.20' 'cyrus-sasl' 'glibc')
groups=('lib-extra')
archs=('x86_64' 'i686')
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=41064 | grep -m1 libetpan | sed  's/\([^]]*\]\)\{2\}\([^ ]*\).*/\2/'"
sha1sums=('d97d929a5f59862aaa1206d09be5ab165b834bb7')

build() 
{
	unset MAKEFLAGS
	Fbuild
	# Permission fixup ?!
	chmod +x $Fdestdir/usr/lib/libetpan.so* || Fdie
}

# optimization OK
