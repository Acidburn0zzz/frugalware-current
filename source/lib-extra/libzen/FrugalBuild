# Compiling Time: 0.23 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=libzen
pkgver=0.4.23
pkgrel=1
pkgdesc="shared library for libmediainfo and mediainfo"
depends=()
groups=('lib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="zenlib"
_F_sourceforge_sep="_"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
up2date="Flasttar http://mediainfo.sourceforge.net/fr/Download/Source"
_F_cd_path="ZenLib/Project/GNU/Library"
sha1sums=('ff5443b94521f3530177fbffbfece45f069bea0b')

build() {
	Fcd
	Fautoreconf
	Fconf
	Fmake
	cd ../../../Source/ZenLib
	Fmkdir /usr/include/ZenLib/
	Finstallrel 644 *.h /usr/include/ZenLib
	for i in Base64 HTTP_Client Format/Html Format/Http TinyXml; do
		Fmkdir /usr/include/ZenLib/$i/
		Finstallrel 644 $i/*.h /usr/include/ZenLib/$i
	done
	cd ../../Project/GNU/Library
	Fmkdir /usr/lib/
	Finstallrel 644 libzen.pc /usr/lib/
}

# optimization OK
