# Compiling Time: 0.03 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=tagpy
pkgver=2013.1
pkgrel=2
pkgdesc="Python bindings for TagLib"
url="http://mathema.tician.de/software/tagpy"
depends=('python' 'taglib' 'libboost>=1.58.0')
makedepends=('distribute' 'boost>=1.58.0' 'ca-certificates')
groups=('lib-extra')
archs=('i686' 'x86_64')
Finclude pypi
sha1sums=('346dd081977e6cfb656102a263728ffd84574099')

build() {
  Fcd
  Fpatchall
  Fexec ./configure.py --taglib-lib-dir=/usr/lib/ \
	  --taglib-inc-dir=/usr/include/taglib/ \
	  --boost-inc-dir=/usr/include/boost/ \
	  --boost-lib-dir=/usr/lib/ \
	  --boost-python-libname=boost_python
  Fexec python setup.py build
  Fexec python setup.py install --root=$Fdestdir
}

# optimization OK
