# Contributor: Balint Kovacs <blint@blint.hu>

pkgname=libpri
pkgver=1.4.4
pkgrel=1
pkgdesc="Primary Rate ISDN specification library"
url="http://www.asterisk.org/"
depends=('glibc')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/downloads | grep -m1 'libpri-.*.tar.gz' | sed 's/.*pri-\(.*\).t.*/\1/'"
source=(http://ftp.digium.com/pub/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('0d5b6ae20692f6777448f7b2f04af2fe76c10828')

build()
{
	Fconf
	make CFLAGS="$CFLAGS -fPIC" || return 1
	Fmakeinstall
}

# optimization ok
