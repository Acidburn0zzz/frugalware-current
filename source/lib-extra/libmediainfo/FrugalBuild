# Compiling Time: 1.95 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=libmediainfo
pkgver=0.7.51
pkgrel=1
pkgdesc="shared library for mediainfo"
depends=('zlib' 'libzen' 'libstdc++')
groups=('lib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="mediainfo"
_F_sourceforge_sep="_"
_F_sourceforge_ext=".tar.bz2"
Fconfopts="$Fconfopts --enable-shared"
Finclude sourceforge
up2date="Flasttar http://mediainfo.sourceforge.net/fr/Download/Source"
_F_cd_path="MediaInfoLib/Project/GNU/Library"
sha1sums=('1f74421126b2637513f2658ed9f0883de075e34b')

build() {
	Fcd
	Fautoreconf
	Fbuild
	cd ../../../Source
	for i in MediaInfo MediaInfoDLL; do
		Fmkdir /usr/include/$i/
		Finstallrel 644 $i/*.h /usr/include/$i
	done
}

# optimization OK
