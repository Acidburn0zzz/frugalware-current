up2date="lynx -dump ftp://ftp.ifor.math.ethz.ch/pub/fukuda/cdd/ | grep cddlib-.*.tar.gz \
	| tail -1 | sed 's/.*cddlib-\(.*\).tar.gz/\1/'"
