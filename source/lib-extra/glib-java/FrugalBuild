archs=('i686' 'x86_64')
Finclude gnome
options=('scriptlet')
export CPPFLAGS="$CPPFLAGS -I/usr/lib/java/include/ -I/usr/lib/java/include/linux/"
Fconfopts="$Fconfopts --with-gcj-compile"
