# Compiling Time: 0.12 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=libburn
pkgver=0.2.6.2
pkgrel=1
pkgdesc="Disc reading/writing library."
url="http://libburn.pykix.org/"
depends=('glibc')
groups=('lib-extra')
archs=('i686')
up2date="lynx -dump http://libburn.pykix.org/|grep -m1 'libburn-\(.*\).tar.gz'|sed 's/.*-\(.*\).tar.gz.*/\1/'"
source=(http://libburnia-download.pykix.org/releases/$pkgname-$pkgver.tar.gz fix.it.patch)
sha1sums=('2e3278be5f0bb0d7a45fb6631d2ce533b40440f8' \
          '5577436b34a074158260e5ff16652b70db032de2')
build()
{
	Fcd
	## brr
	touch NEWS ChangeLog || Fdie
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
} 

# optimization OK
