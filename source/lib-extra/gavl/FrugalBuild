pkgname=gavl
pkgver=0.2.4
pkgrel=1
pkgdesc="A library which provides basic support for uncompressed Audio, Video and Image data."
url="http://gmerlin.sourceforge.net/"
depends=('glibc')
makedepends=('libsamplerate' 'libpng' 'libjpeg' 'libtiff')
groups=('lib-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=19684|grep -m1 'gavl-'|sed 's/.*vl-\(.*\).tar.gz.*/\1/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/gmerlin/$pkgname-$pkgver.tar.gz)
sha1sums=('b4b4a9df224a07090ae042a8d5ac103470c1d650')

build()
{
	Fcd
	Fconf --with-cpuflags=none
	for i in `find . -name Makefile`
	do
		Fsed "-O3" "$CFLAGS" $i
	done
	make || Fdie
	Fmakeinstall
}


# optimization OK
