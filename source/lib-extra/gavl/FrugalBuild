# Compiling Time: 0.73 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=gavl
pkgver=1.1.1
pkgrel=1
pkgdesc="A library which provides basic support for uncompressed Audio, Video and Image data."
_F_sourceforge_dirname="gmerlin"
Finclude sourceforge
url="http://gmerlin.sourceforge.net/"
depends=('glibc')
makedepends=('libsamplerate' 'libpng' 'libjpeg' 'libtiff' 'doxygen')
groups=('lib-extra')
archs=('i686' 'x86_64')
sha1sums=('bf899d4ec80af43caaf5be22018873fce69b6f4d')

build()
{
	Fcd
	Fconf --with-cpuflags=none
	for i in `find . -name Makefile`
	do
		Fsed "-O3" "$CFLAGS" $i
	done
	make || Fdie
	Fmakeinstall
}


# optimization OK
