# Compiling Time: 0.04 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=quazip
pkgver=0.7.2
pkgrel=2
pkgdesc="wrapper for ZIP/UNZIP package"
depends=('qt5-base')
archs=('i686' 'x86_64')
groups=('lib-extra')
Finclude sourceforge
sha1sums=('f34a1bbfff1d00b802e80175ef01ea6045c3818b')
unset MAKEFLAGS

build() {
	Fcd $pkgname-$pkgver/$pkgname
	Fexec qmake-qt5 PREFIX=/usr || Fdie
	make || Fdie
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
