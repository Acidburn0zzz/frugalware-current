pkgname=libofx
pkgver=0.9.11
pkgrel=1
pkgdesc="libofx API for the OFX banking standard."
Finclude sourceforge
depends=('opensp' 'curl>=7.9.7' 'libxml++2')
groups=('lib-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
sha1sums=('ec716e0ab85d64c3211a9e0a397d4e9d552ab61c')

build() {
	Fcd
	./configure --prefix=/usr
	make CXXFLAGS+=-std=c++11
	Fmakeinstall
}

# optimization OK
