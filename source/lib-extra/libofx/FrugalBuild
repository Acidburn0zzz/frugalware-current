pkgname=libofx
pkgver=0.9.10
pkgrel=1
pkgdesc="libofx API for the OFX banking standard."
Finclude sourceforge
depends=('opensp' 'curl' 'libxml++2')
groups=('lib-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
sha1sums=('33f394c963c087217cb6c508af842d4844bc0823')

build() {
	Fcd
	./configure --prefix=/usr
	make CXXFLAGS+=-std=c++11
	Fmakeinstall
}
# optimization OK
