# Compiling Time: 0.19 SBU
# Maintainer: kikadf <kikadf.01@gmail.com>

options+=('asneeded')

pkgname=libhidapi
pkgver=0.8.0_rc1
pkgrel=1
pkgdesc="A Simple library for communicating with USB and Bluetooth HID devices on Linux, Mac, and Windows."
depends=('libusb')
_F_github_author="signal11"
_F_github_name="hidapi"
_F_github_tag="yes"
_F_github_ver="$_F_github_name-${pkgver/_/-}"
Finclude github
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="$up2date | sed 's/hidapi_//'"
sha1sums=('ea2e1b76f4de2a30d0b7364527ee8a78384ffe7f')

build()
{
	Funpack_github
	Fcd
	./bootstrap || Fdie
	Fbuild
}

