# Compiling Time: 0.33 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=libqb
pkgver=1.0.3
pkgrel=5
pkgdesc='Library with the primary purpose of providing high performance client server reusable features'
archs=("x86_64")
groups=('lib-extra')
depends=("glibc")
_F_github_author="ClusterLabs"
_F_github_tag_v=y
Finclude github
source=("https://github.com/ClusterLabs/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz" \
	fix_link.patch )
signatures=("${source[0]}.asc" '')
_Fbuild_no_patch=y

build() {

	Fcd
	Fpatchall
	Fautoreconf
	Fbuild
	## ld script..
	## /usr/lib/libqb.so: ASCII text
	Frm usr/lib/libqb.so
	Fln /usr/lib/libqb.so.0 /usr/lib/libqb.so
}

# optimization OK
