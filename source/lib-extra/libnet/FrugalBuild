pkgname=libnet
pkgver=1.1.2.1
pkgrel=3
pkgdesc="A high-level API allowing the application programmer to construct and inject network packets."
url="http://www.packetfactory.net/libnet/"
depends=()
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep 'Latest Stable' | sed 's/.*\]//'"
source=(http://ftp.frugalware.org/pub/frugalware/frugalware-current/source/lib-extra/libnet/$pkgname.tar.gz)
sha1sums=('760783a2adbd845b731e2000aafa3cd9c3b028d5')
if [ "$CARCH" == "x86_64" ] ; then
    CFLAGS="$CFLAGS -fPIC"
fi
_F_cd_path="$pkgname"

# optimization OK
