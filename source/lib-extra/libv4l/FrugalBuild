pkgname=libv4l
pkgver=0.6.2
pkgrel=1
pkgdesc="Libraries which adds a thin abstraction layer on top of video4linux2 devices"
url="http://hansdegoede.livejournal.com/"
depends=('glibc')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="elinks -dump 'http://people.fedoraproject.org/~jwrdegoede/' | Flasttar"
source=(http://people.fedoraproject.org/~jwrdegoede/$pkgname-$pkgver.tar.gz)
sha1sums=('d9d218d413222be750fec1f6e32a7245e40a12e2')
build()
{
	Fcd
	Fmake
	Fmakeinstall DESTDIR=${Fdestdir} PREFIX=/usr
}
