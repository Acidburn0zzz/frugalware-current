pkgname=libv4l
pkgver=0.6.0
pkgrel=1
pkgdesc="Libraries which adds a thin abstraction layer on top of video4linux2 devices"
url="http://hansdegoede.livejournal.com/"
depends=('glibc')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="elinks -dump 'http://people.atrpms.net/~hdegoede/' | Flasttar"
source=(http://people.atrpms.net/~hdegoede/$pkgname-$pkgver.tar.gz)
sha1sums=('c1b21c26063277b48ac430b6affd9ebebd0e4536')
build()
{
	Fcd
	Fmake
	Fmakeinstall DESTDIR=${Fdestdir} PREFIX=/usr
}