# Compiling Time: 0.13 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=geoip
pkgver=1.4.0
pkgrel=1
pkgdesc="Easily lookup countries by IP addresses, even when Reverse DNS entries don't exist."
url="http://www.maxmind.com/app/c"
depends=('zlib')
backup=(etc/GeoIP.conf)
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.maxmind.com/download/geoip/api/c/?M=D|Flasttar"
source=(http://www.maxmind.com/download/geoip/api/c/GeoIP-$pkgver.tar.gz)

build()
{
	Fcd GeoIP-$pkgver
	Fmake
	# Fmakeinstall won't work
	make DESTDIR=$Fdestdir install
}


# optimization OK
sha1sums=('a108e33661db98a43a9c7334816c1dce6d759c46')
