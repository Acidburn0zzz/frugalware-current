pkgname=libcaca
pkgver=0.9
pkgrel=1
pkgdesc="A graphics library that outputs text instead of pixels."
url="http://libcaca.zoy.org/"
depends=('imlib2' 'ncurses' 'slang')
groups=('lib-extra')
archs=('i686')
up2date="lynx -dump $url/download.html|grep gz$|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=($url/files/libcaca-$pkgver.tar.gz)
Fconfopts="$Fconfopts --disable-doc"
# optimization OK
sha1sums=('6dee4d8b5f5f606333fb6d6e92b1ecfef94dc241')
