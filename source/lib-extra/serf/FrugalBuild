# Compiling Time: 0.02 SBU
# Maintainer: DeX77 <dex77@frugalware.og>

options+=('asneeded')

pkgname=serf
pkgver=1.3.3
pkgrel=1
pkgdesc="High-performance asynchronous HTTP client library"
archs=('i686' 'x86_64')
groups=('lib-extra')
makedepends=('scons')
depends=('apr' 'apr-util' 'openssl' 'zlib')
sha1sums=('b25c44a8651805f20f66dcaa76db08442ec4fa0e')
_F_googlecode_ext=".tar.bz2"
Finclude googlecode

build(){
	Fcd
	scons PREFIX=${Fprefix} LIBDIR=${Fprefix}/lib || Fdie
	scons install --install-sandbox=${Fdestdir} || Fdie
}

# optimization OK
