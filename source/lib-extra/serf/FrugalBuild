# Compiling Time: 0.02 SBU
# Maintainer: DeX77 <dex77@frugalware.og>

pkgname=serf
pkgver=1.3.8
pkgrel=2
pkgdesc="High-performance asynchronous HTTP client library"
url="http://$pkgname.apache.org"
archs=('i686' 'x86_64')
groups=('lib-extra')
makedepends=('scons')
depends=('apr-util>=1.5.4-3')
sha1sums=('1d45425ca324336ce2f4ae7d7b4cfbc5567c5446')
up2date="Flasttar $url/download"
source=("https://archive.apache.org/dist/$pkgname/$pkgname-$pkgver.tar.bz2")

build(){
	Fcd
	scons PREFIX=${Fprefix} LIBDIR=${Fprefix}/lib || Fdie
	scons install --install-sandbox=${Fdestdir} || Fdie
}

# optimization OK
