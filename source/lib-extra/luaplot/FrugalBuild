pkgname=luaplot
pkgver=0.1.0
pkgrel=1
pkgdesc="Plotting library for Lua"
url="http://oproj.tuxfamily.org/"
depends=('cairo>=1.6' 'lua>=5.1')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="Flasttarbz2 http://downloads.tuxfamily.org/oproj/$pkgname/"
source=("http://downloads.tuxfamily.org/oproj/$pkgname/$pkgname-$pkgver.tar.bz2")
sha1sums=('4552fb4742ca604f929cd0792b85a37e4f76a0a7')
build()
{
	Fcd /LuaPlot-$pkgver
	make install DESTDIR=$startdir/pkg/usr || Fdie

}