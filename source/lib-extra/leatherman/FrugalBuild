pkgname=leatherman
pkgver=0.6.2
pkgrel=3
pkgdesc="Collection of C++ and CMake utility libraries"
archs=('i686' 'x86_64')
groups=('lib-extra')
license=('APACHE')
depends=()
makedepends=('libboost' 'boost')
_F_github_author="puppetlabs"
_F_github_tag=y
Finclude cmake github
options=('static')
sha1sums=('5b5b60d078f53d91a65a5dc2baed30f26822cf57')

build() {
        Fcd

        for i in $(grep -rl rb_data_object_alloc ruby)
        do
                Fsed rb_data_object_alloc rb_data_object_wrap $i
        done

        CMake_build
}


# optimization OK
