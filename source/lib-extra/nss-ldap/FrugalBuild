pkgname=nss-ldap
_F_archive_name=nss_ldap
pkgver=265
pkgrel=1
pkgdesc="NSS LDAP Module"
url="http://www.padl.com/OSS/nss_ldap.html"
source=(http://www.padl.com/download/$_F_archive_name-$pkgver.tar.gz \
	nss_ldap-265-glibc-2.16.patch \
	nss_ldap-265-pthread.patch)
up2date="Flasttar http://www.padl.com/download/"
groups=('lib-extra')
archs=('i686' 'x86_64')
depends=('libldap' 'openssl>=1.0.0' 'cyrus-sasl>=2.1.26-2')
makedepends=('openldap')
sha1sums=('743581914fc8c9b4d33955c2cc7acd0c3c44a430' \
          '6e8dcbbea353b67d8bc5750af228418b6f321566' \
          'a508d687a6c20949f8665dd49a1ec650789b0868')
backup=(etc/nsswitch.ldap)

build() {
	Fcd
	export PATH=.:${PATH}
	Fautogen
	Fbuild
	Frm usr/usr
	Frm etc/ldap.conf
}

# optimization OK
