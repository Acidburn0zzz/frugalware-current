post_install()
{
	if ! [ `grep '/usr/lib/libtorrent' etc/ld.so.conf` ]; then
		echo "/usr/lib/libtorrent" >>etc/ld.so.conf
		sbin/ldconfig -r .
	fi
}

pre_remove()
{
	cat etc/ld.so.conf | grep -v '/usr/lib/libtorrent' >/tmp/ld.so.conf.new
	mv /tmp/ld.so.conf.new etc/ld.so.conf
	chmod 644 etc/ld.so.conf
	sbin/ldconfig -r .
}

op=$1
shift

$op $*
