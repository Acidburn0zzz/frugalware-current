pkgname=nessus-plugins
pkgver=2.2.8
pkgrel=1
pkgdesc="Nessus plugins."
url="http://www.nessus.org/"
depends=('nessus-core')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date=$pkgver
source=(ftp://ftp.nessus.org/pub/nessus/nessus-$pkgver/src/$pkgname-GPL-$pkgver.tar.gz Makefile.diff)
sha1sums=('1c12622acea9fb29a993bb8690cd8419c5cc8471' \
	'50e3e00ded37f0e1f8882340cbe6c84dc7bd9399')

build() {
	Fcd $pkgname
	Fbuild
	Frm /var
}

# optimization OK
