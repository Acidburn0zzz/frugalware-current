# Maintainer: Miklos Nemeth <desco@frugalware.org>

pkgname=wxsqlite3
pkgver=1.5.3
pkgrel=1
pkgdesc="wxSQLite3 is a C++ wrapper around the public domain SQLite 3.x database"
url="http://wxcode.sourceforge.net/components/wxsqlite3/"
depends=('sqlite3' 'wxgtk')
makedepends=('hd2u')
groups=('lib-extra')
archs=('i686')
_F_sourceforge_dirname=wxcode
_F_sourceforge_ext=.zip
Finclude sourceforge
sha1sums=('f4c8e7516c7f237f78fa4659c8696f215501b584')

build()
{
    cd wxsqlite3
    dos2unix *
    dos2unix build/*
    chmod 755 configure
    chmod 755 build/config.guess
    chmod 755 build/config.sub
    Fmake
    Fmakeinstall
}