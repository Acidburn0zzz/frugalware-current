# Compiling Time: 0.31 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=ode
pkgver=0.7
pkgrel=1
pkgdesc="ODE is an open source, high performance library for simulating rigid body dynamics."
_F_sourceforge_dirname="opende"
_F_sourceforge_name="$pkgname-src"
_F_sourceforge_ext=".zip"
Finclude sourceforge
url="http://ode.org/"
depends=('libstdc++')
makedepends=('unzip')
groups=('lib-extra')
archs=('i686' 'x86_64')
Fconfopts="$Fconfopts --enable-release=no"
source=($source no-drawstuff-while-is-not-even-installed.patch)

build()
{
	Fcd
	Fpatchall
	./autogen.sh || Fdie
	Fmake
	Fmakeinstall
}

sha1sums=('89d1593fd530e222c9d4aef3820414d4c0b0206b'\
          '5f193a93da14eff75235e97d6cce1c4b980782ca')

# optimization OK
