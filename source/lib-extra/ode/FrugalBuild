# Compiling Time: 0.31 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=ode
pkgver=0.9
pkgrel=1
pkgdesc="ODE is an open source, high performance library for simulating rigid body dynamics."
_F_sourceforge_dirname="opende"
_F_sourceforge_name="$pkgname-src"
_F_sourceforge_ext=".zip"
Finclude sourceforge
url="http://ode.org/"
depends=('libstdc++')
makedepends=('unzip')
groups=('lib-extra')
archs=('i686' 'x86_64')
Fconfopts="$Fconfopts --enable-release=yes --enable-tests=no --enable-demos=no"

build()
{
	if [ "$CARCH" == "i686" ]; then
		Fconfopts="$Fconfopts --with-arch=i686"
	fi
	Fcd
	Fpatchall
	./autogen.sh || Fdie
	Fmake
	Fmakeinstall
}


sha1sums=('3b39ce085c2dc77c3fad7abaa382ffc20d3780e5')
# optimization OK
