# Compiling Time: 0.31 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=ode
pkgver=0.8
pkgrel=1
pkgdesc="ODE is an open source, high performance library for simulating rigid body dynamics."
_F_sourceforge_dirname="opende"
_F_sourceforge_name="$pkgname-src"
_F_sourceforge_ext=".zip"
Finclude sourceforge
url="http://ode.org/"
depends=('libstdc++')
makedepends=('unzip')
groups=('lib-extra')
archs=('i686' 'x86_64')
Fconfopts="$Fconfopts --enable-release=no --enable-tests=no"

build()
{
	Fcd
	Fpatchall
	./autogen.sh || Fdie
	Fmake
	Fmakeinstall
}


sha1sums=('8e8a956ecebfc9e1f5f76b4e0083147581d85abe')
# optimization OK
