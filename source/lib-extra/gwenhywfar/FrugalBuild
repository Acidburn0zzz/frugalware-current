pkgrel=1
pkgdesc="a multi-platform helper library for networking and security applications and libraries."
depends=('openssl' 'libxml2')
groups=('lib-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=88769|grep -m1 'gwenhywfar-2\(.*\).tar.gz'|sed 's/.*-\(.*\).t.*/\1/'"
sha1sums=('b7d367399deca5baba788aa0640f5f220a57ae9f')

build() {
	Fcd
	Fsed "head -1" "head -n 1" configure
	Fbuild --enable-release=yes
}

