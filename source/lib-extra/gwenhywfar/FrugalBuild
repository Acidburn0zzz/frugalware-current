pkgname=gwenhywfar
pkgver=2.4.0
pkgrel=1
pkgdesc="a multi-platform helper library for networking and security applications and libraries."
url="http://gwenhywfar.sourceforge.net"
depends=('openssl' 'libxml2')
groups=('lib-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="lynx -dump 'http://prdownloads.sourceforge.net/gwenhywfar/?sort_by=date' | grep $pkgname-| Flasttar"
sha1sums=('9fb439a2db4df5c377783635b2a8cdb433c01a02')
Fconfopts="$Fconfopts --enable-release=yes"

build() {
	Fcd
	Fsed "head -1" "head -n 1" configure
	Fbuild
}

# optimization OK
