# Compiling Time: 0.18 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=leveldb
pkgver=1.14.0
pkgrel=1
pkgdesc="A fast and lightweight key/value database library by Google"
depends=('snappy>=1.1.1')
groups=('lib-extra')
archs=('i686' 'x86_64')
Finclude googlecode
sha1sums=('641d54df4aaf7ee569ae003cfbdb888ebdee0d7f')

build() {
	Fcd
	Fmake
	Fmkdir /usr/lib
	Fcprel libleveldb.so.1.14 usr/lib/
	Fln /usr/lib/libleveldb.so.1.14 /usr/lib/libleveldb.so.1
	Fln /usr/lib/libleveldb.so.1.14 /usr/lib/libleveldb.so
	Fmkdir /usr/share/doc/$pkgname
	cp -R doc/* $Fdestdir/usr/share/doc/$pkgname
}

# optimization OK
