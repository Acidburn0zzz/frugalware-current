# Compiling Time: 0.31 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=leveldb
pkgver=1.10.0
pkgrel=1
pkgdesc="A fast and lightweight key/value database library by Google"
depends=('snappy>=1.0.5')
groups=('lib-extra')
archs=('i686' 'x86_64')
Finclude googlecode
sha1sums=('d5b234658138d07f6edc2de24e01d9b0585c03cb')

build() {
	Fcd
	Fmake
	Fmkdir /usr/lib
	Fcprel libleveldb.so.1.10 usr/lib/
	Fln /usr/lib/libleveldb.so.1.10 /usr/lib/libleveldb.so.1
	Fln /usr/lib/libleveldb.so.1.10 /usr/lib/libleveldb.so
	Fmkdir /usr/share/doc/$pkgname
	cp -R doc/* $Fdestdir/usr/share/doc/$pkgname
}

# optimization OK
