pkgname=libxml++
pkgver=2.35.1
pkgrel=1
pkgdesc="libxml++ is a C++ wrapper for the libxml XML parser library"
url="http://libxmlplusplus.sourceforge.net/"
groups=('lib-extra')
archs=('i686' 'x86_64' 'ppc')
depends=('libxml2>=2.7.8' 'glibmm' 'glib2')
_F_gnome_ext=".tar.xz"
Finclude gnome
sha1sums=('79dd75eed8c6e1706965ac93930e92508aebf7c3')

build() {
	Fbuild
	Fmv /usr/share/doc/libxml++-2.6 /usr/share/doc/libxml++-$pkgver
}

# optimization OK
