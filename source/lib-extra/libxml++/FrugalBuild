# Contributor: Tuxbubling <tuxbubling at tiscali.fr>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=libxml++
pkgver=2.10.0
pkgrel=1
pkgdesc="libxml++ is a C++ wrapper for the libxml XML parser library"
url="http://www.xmlsoft.org/"
groups=('lib-extra')
archs=('i686' 'x86_64')
depends=('libxml2' 'glibmm')
up2date="lynx -dump http://ftp.gnome.org/pub/GNOME/sources/libxml++/2.10/ | grep LATEST-IS- | sed -ne 's/.*-\(.*\)\.t.*//;s/\[*]*//g;s/[0-9]*......[0-9]//;s/LATEST-IS-//;1 p' | cut -f 1 -d ' '"
source=(http://ftp.gnome.org/pub/GNOME/sources/libxml++/2.10/$pkgname-$pkgver.tar.bz2)
sha1sums=('f899f6e181d0f22bf9f08a152bcf83dae3c2216a')

build() {
	Fbuild
	Fmkdir /usr/share/doc/libxml++-$pkgver
	Fmv /usr/share/doc/libxml++-2.6/docs/manual /usr/share/doc/libxml++-$pkgver
	Fmv /usr/share/doc/libxml++-2.6/docs/reference /usr/share/doc/libxml++-$pkgver
	Frm /usr/share/doc/libxml++-2.6
}

# optimalization OK
