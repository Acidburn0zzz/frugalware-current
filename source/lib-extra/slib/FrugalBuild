pkgname=slib
pkgver=3a3
pkgrel=1
pkgdesc="platform independent library for scheme"
url="http://swissnet.ai.mit.edu/~jaffer/SLIB.html"
depends=()
groups=('lib-extra')
up2date="$pkgver"
source=("http://swiss.csail.mit.edu/ftpdir/scm/slib${pkgver}.zip")
archs=('i686' 'x86_64')
sha1sums=('cceb3972cce9678a5ce5fe6e6b3b3a811e15e29c')

build() {
	Fcd $pkgname
	for i in *; do
		Fsed "/usr/local/lib" "/usr/share" ${i}
		Fsed "/usr/lib" "/usr/share" ${i}
		Fsed "/usr/local" "/usr" ${i}
	done
	Fmkdir /usr/share/slib
	cp *.scm *.init *.xyz *.txt *.dat *.ps $Fdestdir/usr/share/slib/
	Fdocrel README FAQ COPYING
}