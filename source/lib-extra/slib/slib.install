post_install() {
	echo -n "Installing slibcat... "
	guile1 -l /usr/share/guile/1.8/slib/guile.init -c "(use-modules (ice-9 slib)) (require 'new-catalog)"
	echo "done."
}

post_upgrade() {
	post_remove
	post_install
}

post_remove() {
	echo -n "Removing slibcat... "
	rm -rf /usr/share/guile/1.8/slibcat
	echo "done."
}

op=$1
shift

$op $*
