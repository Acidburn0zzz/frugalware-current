pkgname=libnids
pkgver=1.22
pkgrel=1
pkgdesc="Libnids is an implementation of an E-componenet of Network Intrusion Detection System"
Finclude sourceforge
depends=('libpcap' 'glib2' 'libnet>=1.1.2.1-3')
archs=('i686' 'x86_64')
groups=('lib-extra')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=92215 |grep libnids-[0-9] |grep -m1 tar |sed -e 's/.*s-//g' -e 's/.t.*//g'"
sha1sums=('321b0c10e1b192bc150dbe18844cdf7735663cde')

build()
{
	Fmake --prefix=/usr --enable-shared 
	make install_prefix=$Fdestdir install || Fdie
}

# optimization OK
