pkgname=chromaprint
pkgver=1.4
pkgrel=1
pkgdesc="Library that implements a custom algorithm for extracting fingerprints from any audio source."
url="http://acoustid.org/chromaprint"
depends=('ffmpeg>=3.2.1-2')
groups=('lib-extra')
archs=('x86_64')
Finclude cmake
up2date="Flasttar $url"
source=(https://bitbucket.org/acoustid/chromaprint/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('1f512fdd01a6e0f9e534ad65493c75c4a1432813')
_F_cmake_confopts="-DCMAKE_BUILD_TYPE=Release -DBUILD_EXAMPLES=ON"

