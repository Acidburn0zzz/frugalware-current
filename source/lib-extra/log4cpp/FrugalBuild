pkgname=log4cpp
pkgver=1.1.1
pkgrel=2
pkgdesc="A library of C++ classes for flexible logging to files, syslog, IDSA and other destinations."
groups=('lib-extra')
depends=('libstdc++>=6.2.1-5')
archs=('i686' 'x86_64')
_F_archive_grepv="rc"
_F_cd_path="$pkgname"
Finclude sourceforge
source=("${source[@]}" \
	fix-docdir.patch )
sha1sums=('23aa5bd7d6f79992c92bad3e1c6d64a34f8fcf68' \
          '62e700a352f6174eaecc1104d5c77d0d6a8b4f2c')
Fconfopts="	--mandir=$Fdestdir/usr/share/man --docdir=$Fdestdir/usr/share/doc"

build() {
	Fcd
	Fautogen
	Fbuild
}

# optimization OK
