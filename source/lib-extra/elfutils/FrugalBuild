pkgname=elfutils
pkgver=0.111
pkgrel=1
pkgdesc="A collection of utilities and DSOs to handle compiled objects."
url="http://people.redhat.com/drepper/"
depends=('glibc')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump ftp://sources.redhat.com/pub/systemtap/elfutils|grep 'elfutils-\(.*\).tar.gz$'|Flasttar"
source=(ftp://sources.redhat.com/pub/systemtap/elfutils/$pkgname-$pkgver.tar.gz elfutils-gentoo-patches.patch.bz2)
sha1sums=('2f982a52421754b5ba57d90ba51055f65b9afa38' 'b9f86486f30f726dda3f32ac7a633687991319d7')

build() {
	Fbuild --program-prefix="eu-" --enable-shared
}

# optimalization OK
