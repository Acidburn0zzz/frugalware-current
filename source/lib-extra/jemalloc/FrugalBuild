pkgname=jemalloc
pkgver=4.2.1
pkgrel=2
pkgdesc="General-purpose scalable concurrent malloc(3) implementation"
url="http://www.canonware.com/jemalloc"
_F_github_author="$pkgname"
_F_github_tag="no"
Finclude  github
depends=('glibc')
makedepends+=('libxslt' 'docbook-xml' 'docbook-xsl')
options+=('static')
groups=('lib-extra')
archs=('i686' 'x86_64')
sha1sums=('aca7d00e0c4a3de2795996f54e402a337cfc23d2')

build() {

	Fcd
	Fconf
	make build_doc_man build_doc_html || Fdie
	Fmake
	Fmakeinstall

}
# optimization OK
