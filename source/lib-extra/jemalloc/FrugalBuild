pkgname=jemalloc
pkgver=5.0.0
pkgrel=1
pkgdesc="General-purpose scalable concurrent malloc(3) implementation"
url="http://www.canonware.com/jemalloc"
_F_github_author="$pkgname"
_F_github_tag="no"
Finclude  github
depends=('glibc>=2.25')
makedepends+=('libxslt' 'docbook-xml' 'docbook-xsl')
options+=('static')
groups=('lib-extra')
archs=('x86_64')
sha1sums=('b66de1b6afc94f7f6778e2ff6fabbec03b8ffd09')

build() {

	Fcd
	Fconf
	Fexec make build_doc_man build_doc_html || Fdie
	Fmake
	Fmakeinstall

}
# optimization OK
