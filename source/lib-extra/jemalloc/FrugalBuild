pkgname=jemalloc
pkgver=4.4.0
pkgrel=1
pkgdesc="General-purpose scalable concurrent malloc(3) implementation"
url="http://www.canonware.com/jemalloc"
_F_github_author="$pkgname"
_F_github_tag="no"
Finclude  github
depends=('glibc>=2.24-4')
makedepends+=('libxslt' 'docbook-xml' 'docbook-xsl')
options+=('static')
groups=('lib-extra')
archs=('x86_64')
sha1sums=('7f93aa9609a9c4ea37fd79017c453389b75c2746')

build() {

	Fcd
	Fconf
	make build_doc_man build_doc_html || Fdie
	Fmake
	Fmakeinstall

}
# optimization OK
