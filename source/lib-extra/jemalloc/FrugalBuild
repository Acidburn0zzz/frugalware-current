pkgname=jemalloc
pkgver=4.5.0
pkgrel=2
pkgdesc="General-purpose scalable concurrent malloc(3) implementation"
url="http://www.canonware.com/jemalloc"
_F_github_author="$pkgname"
_F_github_tag="no"
Finclude  github
depends=('glibc>=2.25')
makedepends+=('libxslt' 'docbook-xml' 'docbook-xsl')
options+=('static')
groups=('lib-extra')
archs=('x86_64')
sha1sums=('ad3a10866ad34b446f8f133e5edcd028be2f3003')

build() {

	Fcd
	Fconf
	Fexec make build_doc_man build_doc_html || Fdie
	Fmake
	Fmakeinstall

}
# optimization OK
