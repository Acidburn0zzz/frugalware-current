pkgname=jemalloc
pkgver=4.1.0
pkgrel=1
pkgdesc="General-purpose scalable concurrent malloc(3) implementation"
url="http://www.canonware.com/jemalloc"
_F_github_author="$pkgname"
_F_github_tag="no"
Finclude  github
depends=('glibc')
makedepends+=('libxslt' 'docbook-xml' 'docbook-xsl')
options+=('static')
groups=('lib-extra')
archs=('i686' 'x86_64')
sha1sums=('297db4aa5cb73533989f724ce6cf3fe9cc2db721')

build() {

	Fcd
	Fconf
	make build_doc_man build_doc_html || Fdie
	Fmake
	Fmakeinstall

}
# optimization OK
