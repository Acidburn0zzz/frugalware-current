# Compiling Time: 0.77 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=libsmbios
pkgver=2.3.3
pkgrel=2
pkgdesc="libsmbios is a library and set of tools that provide access to BIOS information."
license=('GPL' 'OSL')
makedepends=('doxygen' 'cppunit')
depends=('libstdc++')
groups=('lib-extra')
archs=('x86_64')
_F_github_author="dell"
_F_github_tag_v=y
Finclude github
sha1sums=('c0f9a8ddf5f13fd2ca9b3ab18bee07b54c74dd1a')
Fconfopts+="	--enable-libsmbios_cxx"

build()
{
	Fbuild
	Fmkdir usr/include
	Fexec cp -a src/include/* "${Fdestdir}/usr/include/" || Fdie
	Fexec cp -a out/public-include/* "${Fdestdir}/usr/include/" || Fdie

	Frm /usr/lib/yum-plugins
	Frm /etc/yum
}

# optimization OK
