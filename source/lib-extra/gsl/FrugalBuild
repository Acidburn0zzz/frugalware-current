# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=gsl
pkgver=1.8
pkgrel=1
pkgdesc="The GNU Scientific Library (GSL) is a numerical library for C and C++ programmers."
url="http://www.gnu.org/software/gsl/"
depends=('glibc')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep current |sed -e 's/.*L-\(.*\). I.*/\1/'"
source=(ftp://ftp.belnet.be/mirror/ftp.gnu.org/gnu/gsl/$pkgname-$pkgver.tar.gz)
sha1sums=('0dabdf2d024ae3b29207e485c5413676f3fa136f')

build() {
	Fbuild --with-gnu-ld --disable-static
}

