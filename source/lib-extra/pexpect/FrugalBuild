pkgname=pexpect
pkgver=2.0
pkgrel=2
pkgdesc="A pure python expect-like module"
_F_sourceforge_ext=".tgz"
Finclude sourceforge
url="http://pexpect.sourceforge.net"
license="Python Software Foundation License"
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=59762'|grep -o -m 1 'pexpect-[0-9\.]\+\.tgz'|grep -o '[0-9\.]\+[0-9]'"
source=($source ${source/$pkgver/doc} ${source/$pkgver/examples})
groups=('lib-extra')
archs=('i686' 'x86_64')
depends=('python')
sha1sums=('34f041dfbf288da7d56a3d7994fd1502a7137cda' \
          '46a89aded7aa62321e3dd7f91319c4ec66cdc29d' \
          '0b1539effa4d065481a1707e0048cc7560b5f324')

build()
{
	Fbuild
	Fdoc doc/*.html
	Fmkdir /usr/share/doc/$pkgname-$pkgver/examples
	Fexe examples/*.py /usr/share/doc/$pkgname-$pkgver/examples/
}

