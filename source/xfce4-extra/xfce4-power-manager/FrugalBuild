pkgname=xfce4-power-manager
pkgver=0.8.1.1
pkgrel=1
pkgdesc="A power manager for the Xfce4 desktop."
makedepends=('intltool')
depends=('gtk+2>=2.16.2-2' 'dbus' 'dbus-glib>=0.80' 'xfconf>=4.6.1-2' 'hal>=0.5.11' \
	'libxfcegui4>=4.6.1-3' 'libxfce4util>=4.6.1' 'libnotify>=0.4.5-2' \
	'xfce4-panel>=4.6.1-2')
makedepends=('intltool' 'xproto')
groups=('xfce4-extra' 'xfce4-goodies')
archs=('i686' 'x86_64')
options=('force')
_F_xfce_goodies_ext=".tar.bz2"
_F_gnome_iconcache="y"
Finclude xfce4
Finclude gnome-scriptlet
sha1sums=('288884405163ff4a4d85874ec5faff708c7a1c27')

build()
{
	Fbuild
	# remove conflicting files
	Frm /usr/share/icons/hicolor/scalable/apps/gnome-inhibit-applet.svg
	Fbuild_gnome_scriptlet
}

# optimization OK
