pkgname=ksshaskpass5
pkgver=5.8.3
pkgrel=1
pkgdesc="Kf5 implementation of ssh-askpass with Kwallet integration"
archs=("x86_64")
groups=('plasma')
_F_kde_project="plasma"
Finclude kf5
source+=(ksshaskpass5.sh)
sha1sums=('8349c259627a639361baf5e828f44a3ec3aa96b0' \
          '31f920035ed660750baa66c027865c4296e9d73e')
depends=("kcoreaddons>=$_F_kf5_full" "ki18n>=$_F_kf5_full" \
	"kwallet5>=$_F_kf5_full" "kwidgetsaddons>=$_F_kf5_full")
makedepends+=("kdoctools>=$_F_kf5_full")

replaces=('x11-ssh-askpass' 'ksshaskpass')
conflicts=("${replaces[@]}")

build()
{
	KDE_build
	## man is broken too .. telling you about whtever
	Frm usr/share/{applications,man}
	Fexe /etc/profile.d/ksshaskpass5.sh
}
# optimization OK
