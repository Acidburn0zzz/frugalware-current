pkgname=breeze-grub
pkgver=5.7.5
pkgrel=1
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=('i686' 'x86_64')
_F_kde_project="plasma"
Finclude kf5
rodepends=('grub2')
sha1sums=('59b68764aa366beb5922eb70fc7b8a2c2f8e8fce')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
