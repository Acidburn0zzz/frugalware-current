pkgname=breeze-grub
pkgver=5.8.1
pkgrel=1
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=('i686' 'x86_64')
_F_kde_project="plasma"
Finclude kf5
rodepends=('grub2')
sha1sums=('29f3872124313ce034fb8f06c93a8e488e7efff2')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
