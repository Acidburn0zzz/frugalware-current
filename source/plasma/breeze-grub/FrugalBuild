pkgname=breeze-grub
pkgrel=1
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=('i686' 'x86_64')
_F_kde_project="plasma"
Finclude kf5
rodepends=('grub2')
sha1sums=('a8a7bd5cac68fce0e82841554ef9fdc2ebc8833a')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
