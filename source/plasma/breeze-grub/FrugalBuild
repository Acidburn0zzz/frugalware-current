pkgname=breeze-grub
pkgrel=1
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=('i686' 'x86_64')
_F_kde_project="plasma"
Finclude kf5
rodepends=('grub2')
sha1sums=('498b080860c0e3748a6c1b63fab8e74c62193ebd')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
