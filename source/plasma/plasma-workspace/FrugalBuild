build() {
	Fcd
	KDE_build
	Fmkdir etc/X11
	Fmv usr/share/xsessions etc/X11/sessions
	Fln /usr/share/plasma/look-and-feel/org.kde.breeze.desktop /usr/share/plasma/look-and-feel/org.kde.desktop
	Fmkdir etc/pam.d
	Finstall 644 etc/pam.d/kde
	Fsplit plasma-wayland-session usr/share/wayland-sessions
}

