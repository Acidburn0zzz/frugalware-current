depends=('libxv>=1.0.10-2' 'gstreamer1>=1.9.2-2' 'libffi>=3.2.1-2' 'orc>=0.4.26')
makedepends=('gtk-doc' 'pyxml' 'liboil>=0.3.17-3' 'gobject-introspection>=1.49.2' 'x11-protos')
groups=('xmultimedia')
archs=('i686' 'x86_64')
options+=('scriptlet')
_F_gnome_ext=".tar.xz"
_F_gnome_name="gst-plugins-base"
_F_gnome_devel="y"
Finclude gnome
#source=(http://gstreamer.freedesktop.org/src/${_F_archive_name}/${_F_archive_name}-$pkgver.tar.xz)
sha1sums=('d51f2d98333d26cbe9a10717c209257dc3f6af13')

