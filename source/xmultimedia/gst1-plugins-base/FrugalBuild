pkgname=gst1-plugins-base
_F_archive_name="gst-plugins-base"
pkgver=1.6.3
pkgrel=1
pkgdesc="Plugins for GStreamer 1.0"
url="http://gstreamer.freedesktop.org/"
depends=('libxv>=1.0.10-2' 'gstreamer1>=1.6.3' 'libffi>=3.2.1' 'orc>=0.4.24-2')
makedepends=('gtk-doc' 'pyxml' 'liboil>=0.3.17-3' 'gobject-introspection>=1.46.0-2' 'x11-protos')
groups=('xmultimedia')
archs=('i686' 'x86_64')
options+=('scriptlet')
_F_gnome_ext=".tar.xz"
_F_gnome_name="gst-plugins-base"
_F_gnome_devel="n"
Finclude gnome
source=(http://gstreamer.freedesktop.org/src/${_F_archive_name}/${_F_archive_name}-$pkgver.tar.xz)
sha1sums=('cb760920adde59926b0bee95a91fa64c920bb123')



subpkgs+=("$pkgname-cdparanoia")
