# Compiling Time: 2.17 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=ffmpeg
pkgver=20090403
pkgrel=1
pkgdesc="FFMpeg is a complete and free Internet live audio and vide  broadcasting solution for Linux/Unix."
url="http://ffmpeg.sourceforge.net/"
depends=('a52dec' 'amrnb' 'amrwb' 'faac>=1.28' 'lame' 'libtheora' 'libvorbis' 'x264>=20090416' 'xvidcore' 'libdc1394' 'imlib2' 'sdl>=1.2.13-2' 'faad2>=2.7' 'gsm')
makedepends=('freetype2')
groups=('xmultimedia')
archs=('i686' 'x86_64' 'ppc')
up2date=$pkgver
source=(http://ftp.frugalware.org/pub/other/sources/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('dfa3216f0049ab78b3c6a847d71b4c643cfcaf43')

build() {
	unset MAKEFLAGS
	Fconf \
		--enable-gpl \
		--enable-nonfree \
		--enable-postproc \
		--enable-libmp3lame \
		--enable-libvorbis \
		--enable-libtheora \
		--enable-libfaac \
		--enable-libfaad \
		--enable-libfaadbin \
		--enable-libx264 \
		--enable-libxvid \
		--enable-libdc1394 \
		--enable-libamr_nb \
		--enable-libamr_wb \
		--enable-libgsm \
		--enable-shared \
		--disable-static \
		--enable-pthreads \
		--enable-x11grab
	make SHARED_PP="yes" || Fdie
	make DESTDIR=$Fdestdir install || Fdie
}

# optimization OK
