pkgname=gstreamer1
_F_archive_name="gstreamer"
pkgver=1.10.1
pkgrel=1
pkgdesc="Open Source Multimedia Framework"
url="http://gstreamer.freedesktop.org/"
depends=('glib2>=2.50.0' 'libcap>=2.24-5' 'libffi>=3.2.1-2')
makedepends=('python>=2.7.12-2' 'orc>=0.4.26' 'gobject-introspection>=1.50.0' 'check>=0.10.0-3')
groups=('xmultimedia')
archs=("x86_64")
options+=('scriptlet')
replaces=('gstreamer08')
_F_gnome_ext=".tar.xz"
_F_gnome_name="gstreamer"
_F_gnome_devel="n"
Finclude gnome
#source=(http://gstreamer.freedesktop.org/src/gstreamer/gstreamer-$pkgver.tar.xz gstreamer1.sh)
source=($source gstreamer1.sh)
replaces=('gst1-plugins-bad-alsa')

sha1sums=('4836e99f1a7a9ea7fe4cac5dee08ab3b3fe9ba77' \
          '9c4dbeb5436b8a4d135f8a89a939295d2d0cfa81')

subpkgs=("$pkgname-docs")
subdescs=('GStreamer 1.2 Documentation.')
subdepends=()
subgroups=('gnome-extra docs-extra')
subarchs=("x86_64")

build()
{
	Fbuild \
		--with-package-name='Frugalware gstreamer package' \
             	--with-package-origin='http://frugalware.org' \
				--disable-gtk-doc --disable-debug \
             	--disable-tests  --disable-examples

	Fexe /etc/profile.d/gstreamer1.sh
    Fsplit $pkgname-docs usr/share/gtk-doc
}

# optimization OK
