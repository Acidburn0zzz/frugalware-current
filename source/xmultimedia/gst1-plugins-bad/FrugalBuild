subpkgs+=("$pkgname-resindvd")
subdescs+=('GStreamer resindvd plugin (Bad).')
subdepends+=("gst1-plugins-base>=1.8.1 libffi>=3.2.1 libdvdread>=5.0.3-3 libdvdnav>=5.0.3-3")
