# Compiling Time: 0.23 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=akode
pkgver=2.0.2
pkgrel=1
pkgdesc="A simple audio-decoding frame-work that provides a uniform interface to decode the most common audio-formats"
depends=('jack' 'flac>=1.1.3' 'libsamplerate' 'libvorbis' 'speex' 'libmad' 'libstdc++' 'ffmpeg' 'faad2' 'faac')
license="LGPL"
groups=('xmultimedia')
archs=('i686' 'x86_64')
_F_kde_id="30375"
_F_kde_reconf=1
Finclude kde
source=(http://www.kde-apps.org/CONTENT/content-files/30375-$pkgname-$pkgver.tar.bz2)

build ()
{
	Fbuild_kde_reconf
	Fmake --disable-dependency-tracking \
		--enable-new-ldflags \
		--with-gnu-ld \
		--with-jack \
		--with-vorbis \
		--with-libsamplerate \
		--with-libmad \
		--with-oss \
		--with-alsa \
		--with-speex \
		--with-flac \
		--with-ffmpeg \
		--enable-final \
		--disable-debug \
		--without-debug
	Fmakeinstall
}


sha1sums=('10ad1e335bc53c2a90d133b493568324514c729c')
# optimization OK
