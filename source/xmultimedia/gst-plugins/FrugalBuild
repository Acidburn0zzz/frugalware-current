pkgname=gst-plugins
pkgver=0.8.11
pkgrel=5
pkgdesc="Plugins for GStreamer"
url="http://gstreamer.freedesktop.org/"
depends=('python' 'gconf' 'gstreamer' 'gtk+2' 'alsa-lib' 'audiofile' \
	'cdparanoia' 'libdvdread' 'libdvdnav' 'esd' 'faac' 'faad2' 'flac' \
	'gnome-vfs' 'lame' 'libdv' 'libmng' 'libmad' 'libid3tag' 'libmikmod' \
	'mjpegtools>=1.8.0' 'libmusicbrainz' 'libraw1394' 'sdl' 'libsndfile' \
	'libvorbis' 'libtheora' 'a52dec' 'aalib' 'libavc1394' 'xvidcore' 'libcdio' 'libcdaudio' 'libxdamage')
makedepends=('mpeg2dec' 'libfame')
#extra_depends=('liboil' 'audioresample' \
#'dirac-pic' 'directfb' 'divx' 'dtsdec' 'gsm' 'hermes' 'ivorbisdec' \
#'jack' 'ladspa' 'libcaca' 'lcs' 'libmms' 'librfb' 'libvisual' \
#'musepack' 'polyplib' 'shout' 'sidplay' 'speex' 'swfdec' \
#'amrnb')
groups=('xmultimedia')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
sha1sums=('4a9be6b62dd0e8a73616e8e93f7a3ace8aec8c59')

build() {
	[ "$CARCH" == "x86_64" ] && export CFLAGS="$CFLAGS -fPIC"
	Fmake --disable-schemas-install --disable-arts --disable-artsc
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}


# optimization OK
