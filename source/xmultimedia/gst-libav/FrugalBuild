# Compiling time: 1.94 SBU
# Maintainer: Baste <baste@frugalware.org>

pkgname=gst-libav
pkgver=1.8.0
pkgrel=1
pkgdesc="GStreamer plugin for the libav* library (former FFmpeg)"
url="http://gstreamer.freedesktop.org"
depends=('gst1-plugins-base>=1.8.0' 'libffi>=3.2.1' 'ffmpeg>=2.8.4')
makedepends=('yasm>=1.3.0-2')
groups=('xmultimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/src/$pkgname/|grep '.tar.xz$'|sort -n -r|head -n 1|sed 's/.*-\(.*\).t.*/\1/'"
source=($url/src/$pkgname/$pkgname-$pkgver.tar.xz)
sha1sums=('b67949054cf1f5abb386c860156b1a1f973c45e9')
replaces=('gst-ffmpeg')
provides=('gst-ffmpeg')


build() {

	Fbuild \
		--disable-static \
		--with-system-libav \
		--enable-gpl \
		--with-package-name='Frugalware gstreamer libav plugin package' \
		--with-package-origin='http://frugalware.org/'
}

# optimization OK
