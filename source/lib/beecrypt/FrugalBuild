# Last Modified: Mon, 14 Mar 2005 12:18:25 +0100
# Compiling Time: ~3 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=beecrypt
pkgver=4.1.2
pkgrel=2
pkgdesc="An ongoing project to provide a strong and fast cryptography toolkit"
url="http://sourceforge.net/projects/beecrypt"
groups=('lib')
depends=('glibc')
up2date="lynx -dump http://sourceforge.net/projects/beecrypt|grep -1 Version|sed -n -e 's/.*]\([0-9\.]*\) [A-Z].*/\1/' -e '3 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('820d26437843ab0a6a8a5151a73a657c')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --enable-shared=no --enable-static=yes \
		    --with-pic

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
