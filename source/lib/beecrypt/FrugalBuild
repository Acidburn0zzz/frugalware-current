# Last Modified: Mon, 14 Mar 2005 12:18:25 +0100
# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=beecrypt
pkgver=4.1.2
pkgrel=2
pkgdesc="An ongoing project to provide a strong and fast cryptography toolkit"
Finclude sourceforge
groups=('lib')
archs=('i686' 'x86_64')
depends=('glibc')
sha1sums=('71cebd3329bb2561ffba24a2004dfac50b143f59')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --enable-shared=no --enable-static=yes \
		    --with-pic

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
