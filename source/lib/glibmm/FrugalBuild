pkgname=glibmm
pkgver=2.50.0
pkgrel=1
pkgdesc="C++ interface for glib2"
url="http://www.gnome.org/"
depends=('libsigc++2>=2.10.0' 'glib2>=2.50.0')
groups=('lib')
archs=("x86_64")
_F_gnome_ext=".tar.xz"
_F_gnome_devel="n"
Finclude gnome
sha1sums=('21ed63712e1bf84163768d4b909af80e4373e298')

subpkgs=("$pkgname-docs")
subdescs=("Glibmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=("x86_64")

build()
{
	Fbuild
	Fsplit $pkgname-docs usr/share/doc
}
# optimization OK
