pkgname=libmikmod
pkgver=3.1.11
pkgrel=3
pkgdesc="A module sound player and library"
url="http://mikmod.raphnet.net/"
groups=('lib')
depends=('glibc' 'texinfo')
up2date=`lynx -dump http://mikmod.raphnet.net/|grep libmikmod-.*tar.gz|grep -v beta|sed -n -e 's/libmikmod-//' -e 's/.tar.gz//' -e '1 p'|tr -s ' '|cut -d ] -f 2|cut -d ' ' -f 1`
source=(http://mikmod.raphnet.net/files/$pkgname-$pkgver.tar.gz)
md5sums=('705106da305e8de191549f1e7393185c')
install=$pkgname.install

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make prefix=$startdir/pkg/usr install
	rm $startdir/pkg/usr/info/dir
}
