pkgname=gd
pkgver=2.2.3
pkgrel=1
pkgdesc="an ansi C library to generate fancy images from programs"
url="http://libgd.github.io/"
depends=('libxml2>=2.9.3-3' 'fontconfig>=2.11.94-3' 'libjpeg>=9b' \
	'libpng>=1.6.20' 'freetype2>=2.6.2-3' 'libtiff>=4.0.6')
groups=('lib')
archs=('i686' 'x86_64' 'arm')
_F_github_name="libgd"
_F_github_author="libgd"
_F_github_tag=y
_F_github_ver="gd-${pkgver}"
Finclude github
up2date="$up2date | sed 's/gd_//'"
sha1sums=('c4a734780ff8a3aa2fb439bb55924df62c339c8c')

build()
{
	Fcd
	Fautoreconf
	Fbuild
}

# optimization OK
