# Last Modified: Thu, 01 Sep 2005 14:33:57 +0200
# Compiling Time: ~3 minute
# Maintainer: Karoly CZOVEK <slinky@rei.keni.hu>

pkgname=gd
pkgver=2.0.33
pkgrel=2
pkgdesc="an ansi C library to generate fany images from programs"
url="http://www.boutell.com/gd/http"
depends=('fontconfig' 'libjpeg' 'libpng' 'freetype2')
groups=('lib')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.boutell.com/gd/| grep Stable|sed  -e 's|.*Version \(.*\) (.*|\1|g'"
source=($url/$pkgname-$pkgver.tar.gz)
md5sums=('be0a6d326cd8567e736fbc75df0a5c45')

# prevent depending on x
[ "$CHROOT" = "1" ] || \
	{
		error "You must build $pkgname in a chroot environment!"
		Fdie
	}

# vim: ft=sh
