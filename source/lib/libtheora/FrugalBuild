# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libtheora
pkgver=1.0alpha5
pkgrel=1
pkgdesc="An open video codec developed by the Xiph.org"
url="http://www.theora.org/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('libogg')
makedepends=('libvorbis')
up2date="lynx -dump http://downloads.xiph.org/releases/theora/|grep tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://downloads.xiph.org/releases/theora/$pkgname-$pkgver.tar.bz2)
sha1sums=('8e740ccd7219861de83ac17ecceb13c02ed7e24a')

build()
{
	Fbuild --enable-shared
}

