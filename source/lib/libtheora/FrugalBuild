# Last Modified: Fri, 25 Mar 2005 10:07:42 +0100
# Compiling Time: ~0.1 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libtheora
pkgver=1.0alpha4
pkgrel=4
pkgdesc="An open video codec developed by the Xiph.org"
url="http://www.theora.org/"
groups=('lib')
depends=('libogg')
makedepends=('libvorbis')
up2date="lynx -dump http://downloads.xiph.org/releases/theora/|grep tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://downloads.xiph.org/releases/theora/$pkgname-$pkgver.tar.bz2)
# http://downloads.xiph.org/releases/theora/MD5SUMS
md5sums=('a71ac42ec0f848da327930841a80ff2b')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --enable-shared

	make || return 1

	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
