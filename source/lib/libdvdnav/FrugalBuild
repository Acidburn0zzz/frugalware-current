# Last Modified: Mon, 14 Mar 2005 13:11:29 +0100
# Compiling Time: ~36 seconds
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>
# Contributor: Shrift <shrift@frugalware.org>

pkgname=libdvdnav
pkgver=0.1.10
pkgrel=2
pkgdesc="The library for xine-dvdnav plugin."
url="http://dvd.sourceforge.net/index.shtml"
groups=('lib')
depends=('glibc' 'libdvdread' 'libdvdcss')
up2date=`lynx -dump 'http://prdownloads.sourceforge.net/dvd/?sort_by=date&sort=desc'|grep dvd/libdvdnav-[0-9\.]*.tar.gz|sed -ne 's/.*v-\(.*\)\.t.*/\1/;1 p'`
source=(http://dl.sourceforge.net/sourceforge/dvd/$pkgname-$pkgver.tar.gz)
md5sums=('c8ddee96ba1182d73447eaf0bb6fde81')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./autogen.sh --prefix=/usr

	make || return 1

	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
