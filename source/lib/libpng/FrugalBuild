pkgname=libpng
pkgver=1.2.28
pkgrel=1
pkgdesc="A collection of routines used to create PNG format graphics files"
url="http://www.libpng.org/"
depends=('zlib')
groups=('lib')
archs=('i686' 'x86_64' 'ppc')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('17ca5906a8c78a4c97631912e78aada8a2951891')

build() {
	Fcd
	Fpatchall
	Fautoreconf
	Fconf
	make ECHO=echo || Fdie
	Fmakeinstall
}

# optimization OK
