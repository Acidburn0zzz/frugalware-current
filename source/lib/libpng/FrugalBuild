# Compiling Time: 0.22 SBU
# Contributor: VMiklos <vmiklos@frugalware.org>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=libpng
pkgver=1.2.41
pkgrel=1
pkgdesc="A collection of routines used to create PNG format graphics files"
depends=('zlib')
groups=('lib')
archs=('i686' 'x86_64' 'ppc')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
url="http://www.libpng.org/"
up2date="Flasttar $url/pub/png/libpng.html | sed 's/_no_config//'"
source=("${source[@]}" http://littlesvr.ca/apng/diff/$pkgname-$pkgver-apng.patch)
sha1sums=('e859ce73c5344ce10576d03cab3b660459b30c13' \
          'e89f03ceaa0aaa824a4d222d0b1bc25361eb342f')

build() {
	Fcd
	Fpatchall
	Fautoreconf
	Fconf
	make ECHO=echo || Fdie
	Fmakeinstall
}

# optimization OK
