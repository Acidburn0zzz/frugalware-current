pkgname=sqlite2
pkgver=2.8.16
pkgrel=1
pkgdesc="A C library that implements an SQL database engine"
url="http://www.sqlite.org/"
depends=('readline')
groups=('lib')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.sqlite.org/download.html|grep sqlite-2.*tar.gz|sed -n 's/.*e-\(.*\)\.t.*/\1/;1 p'"
source=(http://www.sqlite.org/sqlite-$pkgver.tar.gz)
md5sums=('9c79b461ff30240a6f9d70dd67f8faea')

build() {
	cd $startdir/src/sqlite-$pkgver
	./configure --prefix=/usr

	make || return 1

	make prefix=$startdir/pkg/usr install
}

