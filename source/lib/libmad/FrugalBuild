pkgname=libmad
pkgver=0.15.1b
pkgrel=2
pkgdesc="A high-quality MPEG audio decoder"
url="http://www.underbit.com/products/mad/"
groups=('lib')
depends=('glibc')
up2date=`lynx -dump http://sourceforge.net/projects/mad/|grep libmad|sed -n '1 p'|cut -d ] -f 3|cut -d ' ' -f 1`
source=(ftp://ftp.mars.org/pub/mpeg/$pkgname-$pkgver.tar.gz)
md5sums=('1be543bc30c56fb6bea1d7bf6a64e66c')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
