# Maintainer: Zsolt Szalai <xbit.lists@chello.hu>

pkgname=libmad
pkgver=0.15.1b
pkgrel=3
pkgdesc="A high-quality MPEG audio decoder"
url="http://www.underbit.com/products/mad/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('glibc')
up2date="lynx -dump http://sourceforge.net/projects/mad/|grep -m1 'MAD suite '|sed 's/.*].*te \(.*\) re.*/\1/'"
source=(ftp://ftp.mars.org/pub/mpeg/$pkgname-$pkgver.tar.gz mad.pc)
sha1sums=('cac19cd00e1a907f3150cc040ccc077783496d76' \
          'a2ee8d3844e95d89af993f7b49df9f2fda00a6d1')
[ "$CARCH" == "x86_64" ] && confopts="--enable-fpm=64bit"

build() {
	Fcd
	Fmake $confopts || return 1
	Fmakeinstall || return 1
	mkdir $Fdestdir/usr/lib/pkgconfig/
	cp $Fsrcdir/mad.pc $Fdestdir/usr/lib/pkgconfig/mad.pc
}
