# Compiling Time: 0.6 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=cloog17
pkgver=0.17.0
pkgrel=3
pkgdesc="A library to generate code for scanning Z-polyhedra."
url="http://www.bastoul.net/$pkgname"
depends=('gmp')
rodepends=('isl09')
makedepends=('isl')
options=('nodocs')
groups=('lib')
archs=('i686' 'x86_64' 'arm')
up2date="Flasttar http://www.bastoul.net/$pkgname/pages/download"
source=(http://www.bastoul.net/cloog/pages/download/cloog-$pkgver.tar.gz)
sha1sums=('decc2221b1f1bd9238288d043835cb018af15d5a')
Fconfopts="--with-isl=system --with-gmp=system"

build()
{
  Fcd cloog-$pkgver
  Fbuild
  Frm /usr/bin /usr/include /usr/lib/\*.{so,la,a} /usr/lib/pkgconfig
}

# optimization OK
