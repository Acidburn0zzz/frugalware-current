pkgname=libopensync
pkgver=0.39
pkgrel=1
pkgdesc="OpenSync is a synchronization framework."
Finclude opensync
depends=('glib2' 'libxml2' 'sqlite3' 'libxslt')
makedepends=('swig' 'python>=2.6')
Finclude cmake
groups=('lib')
archs=('i686' 'x86_64' 'ppc')
sha1sums=('3d97732675aa874da49cca0f8d6de6f004f2a416')

subpkgs=("$pkgname-python")
subdescs=('OpenSync python bindings.')
subdepends=("python $pkgname=$pkgver")
subgroups=('lib')
subarchs=('i686 x86_64')

build()
{
	CMake_build
	#Fbuild_opensync
	Fsplit $pkgname-python usr/lib/python*
}

# optimization OK
