pkgname=libevent
pkgver=1.0
pkgrel=5
pkgextraver=c
pkgdesc="Provides a mechanism to execute a callback function when a specific event occurs on a file descriptor or after a timeout has been reached"
url="http://www.monkey.org/~provos/libevent/"
groups=('lib')
depends=()
up2date=`lynx -dump http://www.monkey.org/~provos/libevent/|grep tar.gz$|sed -n "s/.*-\(.*\)\.t.*/\1/;s/$pkgextraver//;1 p"`
source=(http://www.monkey.org/~provos/$pkgname-$pkgver$pkgextraver.tar.gz)
md5sums=('f80dbeeb609f08be1ffd1803c97257fe')

build() {
	cd $startdir/src/$pkgname-$pkgver$pkgextraver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

