pkgname=gnutls
pkgver=1.3.1
pkgrel=1
pkgdesc="A library which provides a secure layer over a reliable transport layer"
url="http://www.gnu.org/software/gnutls/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('libtasn1' 'opencdk' 'libgcrypt>=1.2.0' 'lzo' 'readline')
makedepends=('gtk-doc>=1.4')
# accidently bumped to 1.3.x, then use this version till 1.4.x
up2date="lynx -dump ftp://ftp.gnutls.org/pub/gnutls|grep tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;s/1\.2\../1.3.1/;$ p'"
# remove "devel/" when returning to -stable
source=(ftp://ftp.gnutls.org/pub/$pkgname/devel/$pkgname-$pkgver.tar.bz2)
sha1sums=('80eb527cf981344778d0dd6cb2ed25f379d8785c')
install=$pkgname.install

build () {
	Fbuild --enable-gtk-doc
}

# optimalization OK
