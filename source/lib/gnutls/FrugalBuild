# Compiling Time: 1.04 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>
# Contributor: VMiklos <vmiklos@frugalware.org>

pkgname=gnutls
pkgver=2.2.5
pkgrel=3solaria1
pkgdesc="A library which provides a secure layer over a reliable transport layer"
url="http://www.gnu.org/software/gnutls/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('libtasn1' 'readline' 'libstdc++' 'opencdk>=0.6.0' 'lzo')
makedepends=('gtk-doc')
options=('scriptlet')
up2date="lynx -dump ftp://ftp.gnutls.org/pub/gnutls/|grep tar.bz2$ | grep -v rc | sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://josefsson.org/gnutls/releases/$pkgname-$pkgver.tar.bz2 \
	CVE-2008-2377.patch CVE-2008-4989.patch)
Finclude texinfo
signatures=($source.sig '' '')

build()
{
	Fpatch CVE-2008-4989.patch
	Fmake --enable-gtk-doc
	make check || return 1
	Fmakeinstall
}

# optimization OK
