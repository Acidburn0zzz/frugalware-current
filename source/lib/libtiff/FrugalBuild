pkgname=libtiff
pkgver=3.7.0
pkgrel=2
pkgdesc="Library for manipulation of TIFF images"
depends=('glibc')
up2date=`lynx -dump 'http://libtiff.maptools.org/'|grep 'Stable Release'|cut -d v -f 2`
source=(http://dl.maptools.org/dl/libtiff/tiff-$pkgver.tar.gz)
md5sums=('305af467c94d988c17ca6528d8936f27')

build() {
	cd $startdir/src/tiff-$pkgver
	./configure --prefix=$startdir/pkg/usr
		# --noninteractive --with-OPTIMIZER="$CFLAGS"
		
	make || return 1
	
	mkdir -p $startdir/pkg/usr
	make install
	cd $startdir/pkg/usr/lib
	ln -s $pkgname.$pkgver $pkgname.so.$pkgver
	ln -s $pkgname.3 $pkgname.so.3
	ln -s $pkgname $pkgname.so
}

# vim: ft=sh
