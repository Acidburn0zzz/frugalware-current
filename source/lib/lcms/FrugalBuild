pkgname=lcms
pkgver=1.17
pkgrel=1
pkgdesc="Lightweight color management development library/engine"
depends=('libjpeg' 'zlib' 'libtiff')
url="http://www.littlecms.com"
groups=('lib')
archs=('i686' 'x86_64' 'ppc')
source=($url/$pkgname-$pkgver.tar.gz)
groups=('lib')
archs=('i686' 'x86_64' 'ppc')
up2date='lynx -dump http://www.littlecms.com/downloads.htm | grep "Download.*\.tar\.gz" | head -n 1 | sed "s/.*lcms-\(.*\)\.tar\.gz.*/\1/"'
sha1sums=('083eb02890048f843803a5974914e54b5e034493')

# optimization OK
