pkgname=libxml2
pkgver=2.6.22
pkgrel=1
pkgdesc="XML parsing library"
url="http://www.xmlsoft.org/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('zlib')
makedepends=('python' 'readline')
up2date="lynx -dump 'http://xmlsoft.org/sources/?O=D'|grep 'libxml2-[0-9\.]*tar.gz$'|sed -ne 's/.*2-\(.*\).tar.gz$/\1/;1 p'"
source=(ftp://xmlsoft.org/$pkgname-$pkgver.tar.gz)
sha1sums=('ef9f217d10548ea5bfb0a3f84cc9fc58a2218fb2')

build() {
	Fcd
	Fsed "tail -1" "tail -n 1" configure
	Fsed "head -1" "head -n 1" configure
	Fmake --with-threads --without-debug --with-readline --with-zlib
	Fmakeinstall
}

# vim: ft=sh

# optimalization OK
