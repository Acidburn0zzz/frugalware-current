pkgname=libxml2
pkgver=2.6.20
pkgrel=1
pkgdesc="XML parsing library"
url="http://www.xmlsoft.org/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('zlib')
makedepends=('python')
up2date="lynx -dump 'http://xmlsoft.org/sources/?O=D'|grep 'libxml2-[0-9\.]*tar.gz$'|sed -ne 's/.*2-\(.*\).tar.gz$/\1/;1 p'"
source=(ftp://xmlsoft.org/$pkgname-$pkgver.tar.gz)
md5sums=('8f0b3ce721bda11401e656b90ba4e78c')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --with-threads
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh

# optimalization OK
