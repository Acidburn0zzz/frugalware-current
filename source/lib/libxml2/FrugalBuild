# Contributor: VMiklos <vmiklos@frugalware.org>

pkgname=libxml2
pkgver=2.6.23
pkgrel=2
pkgdesc="XML parsing library"
url="http://www.xmlsoft.org/"
groups=('lib' 'chroot-core')
archs=('i686' 'x86_64' 'ppc')
depends=('zlib')
makedepends=('python' 'readline')
up2date="lynx -dump http://www.xmlsoft.org/news.html| grep -m1 ^[0-9]|sed 's/\(.*\):.*/\1/'"
source=(ftp://xmlsoft.org/libxml2/$pkgname-$pkgver.tar.gz)
sha1sums=('e0e58856532c49bd16447922ec802c7ac99d497d')

build() {
	Fcd
	Fsed "tail -1" "tail -n 1" configure
	Fsed "head -1" "head -n 1" configure
	Fbuild --with-threads --with-debug --with-readline --with-zlib
	Ffilerel libxml-2.0.pc /usr/lib/pkgconfig/libxml-2.0.pc
}

# optimalization OK
