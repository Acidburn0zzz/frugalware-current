pkgname=pcre
pkgver=6.0
pkgrel=1
pkgdesc="Perl-compatible regular expression library"
url="http://pcre.sourceforge.net"
groups=('lib')
archs=('i686' 'x86_64')
depends=('glibc')
up2date="wget --passive-ftp -O - -q ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/ |grep 'tar.gz<'|tail -n 1|sed 's/.tar.gz//'|cut -d - -f 2|cut -d '\"' -f 1"
source=(ftp://ftp.csx.cam.ac.uk/pub/software/programming/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('90d39d4c50c654e50417e3b3ff488b5a')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
