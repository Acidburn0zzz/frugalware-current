# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname=libvpx
pkgver=1.6.0
pkgrel=1
pkgdesc="WebM VP8 VP9 Codec SDK"
depends=('libstdc++>=5.3.0-2')
makedepends=('yasm')
groups=('lib')
archs=('i686' 'x86_64' 'arm')
_F_github_author=webmproject
_F_github_tag_v="v"
Finclude github
sha1sums=('959e4e8f28819e38fb1593cf3d294ef89f083b87')
Fconfopts+="--enable-experimental \
        	--enable-vp8 \
		--enable-vp9 \
        	--enable-vp9-highbitdepth \
		--enable-runtime-cpu-detect \
		--enable-shared \
		--enable-postproc \
		--enable-vp9-postproc \
		--enable-pic \
		--prefix=/usr \
		--libdir=/usr/lib \
		--enable-spatial-svc"

build() {
	Fbuild
	chmod 644 "$Fdestdir"/usr/include/vpx/*.h || Fdie
}

# optimization OK
