pkgname=libvpx
pkgver=1.6.1
pkgrel=1
pkgdesc="WebM VP8 VP9 Codec SDK"
depends=('libstdc++>=6.2.1-5')
makedepends=('yasm>=1.3.0-3')
groups=('lib')
archs=("x86_64")
_F_github_author=webmproject
_F_github_tag_v="v"
Finclude github
sha1sums=('9e41a6bb2b991f5542c264676ac452114cda9c7c')
Fconfopts+="--enable-experimental \
        	--enable-vp8 \
		--enable-vp9 \
        	--enable-vp9-highbitdepth \
		--enable-runtime-cpu-detect \
		--enable-shared \
		--enable-postproc \
		--enable-vp9-postproc \
		--enable-pic \
		--prefix=/usr \
		--libdir=/usr/lib \
		--enable-spatial-svc"

build() {
	Fbuild
	chmod 644 "$Fdestdir"/usr/include/vpx/*.h || Fdie
}

# optimization OK
