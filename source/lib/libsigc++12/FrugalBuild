pkgname=libsigc++12
realname=libsigc++
pkgver=1.2.7
pkgrel=1
pkgdesc="Callback Framework for C++ version $pkgver"
url="http://libsigc.sourceforge.net/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('gcc')
up2date="pud -p 'http://ftp.gnome.org/pub/GNOME/sources/libsigc++/1.2/' -e 'LATEST-IS-(.*?)\s'"
source=(http://ftp.gnome.org/pub/GNOME/sources/libsigc++/1.2/libsigc++-$pkgver.tar.bz2)
md5sums=('212f48536019e1f003d2509b4c9b36df')

build() {
        cd $startdir/src/libsigc++-$pkgver
        Fmake || return 1
	Fmakeinstall || return 1	
}
