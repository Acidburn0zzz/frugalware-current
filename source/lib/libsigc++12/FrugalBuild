# Last Modified: Mon, 14 Mar 2005 13:41:03 +0100
# Compiling Time: ~2 minute
# Maintainer: Shrift <shrift@frugalware.org>

pkgname=libsigc++12
pkgver=1.2.5
pkgrel=2
pkgdesc="Callback Framework for C++ version 1.2.5"
url="http://libsigc.sourceforge.net/"
groups=('lib')
depends=('gcc')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/libsigc/?sort_by=date&sort=desc'|grep libsigc++-1.2.*tar.gz$|sed -n 's/.*+-\(.*\).t.*/\1/;1 p'"
source=(http://prdownloads.sourceforge.net/libsigc/libsigc++-1.2.5.tar.gz)
md5sums=('d0d1ffcae0eced97ef4f17ce0ba81352')

build() {
        cd $startdir/src/libsigc++-1.2.5
        ./configure --prefix=/usr
	
        make || return 1
	
        make DESTDIR=$startdir/pkg install
}

