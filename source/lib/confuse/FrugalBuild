pkgname=confuse
pkgver=2.5
pkgrel=1
pkgdesc="libConfuse is a configuration file parser library written in C"
url="http://www.nongnu.org/confuse/"
depends=('glibc' 'check' 'pkgconfig' 'automake')
makedepends=('intltool')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://download.savannah.gnu.org/releases/confuse/ | Flasttar"
source=(http://download.savannah.gnu.org/releases/confuse/confuse-$pkgver.tar.gz)
sha1sums=('0ba87baeb0f6540414b24c4b2d47ae375d0b870d')

build()
{
    Fcd
    Fsed '#include "confuse.h"' '#include "../src/confuse.h"' tests/check_confuse.c
    Fbuild --disable-debug --enable-shared  --enable-nls
    Finstallrel 755 tests/check_confuse usr/bin
}
  
# optimization OK
