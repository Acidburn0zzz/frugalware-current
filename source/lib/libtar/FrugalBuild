pkgname=libtar
pkgver=1.2.11
pkgrel=3
pkgdesc="C library for manipulating POSIX tar files"
# old url is 404
groups=('lib')
# url="http://www-dev.cites.uiuc.edu/libtar/"
groups=('lib')
url="http://www.feep.net/libtar/"
groups=('lib')
depends=('zlib')
up2date="lynx -dump http://www.feep.net/libtar/|grep ftp|sed -n '1 p'|tr -s ' '|sed 's/.tar.gz//'|cut -d - -f 2"
source=(ftp://ftp.feep.net/pub/software/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-memleak.diff)
md5sums=('604238e8734ce6e25347a58c4f1a1d7e' '9e9fa48f72a939805b4037bf66c9fc6e')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/$pkgname-$pkgver-memleak.diff
	./configure --prefix=/usr
	
	make || return 1
	
	make prefix=$startdir/pkg/usr install
}

