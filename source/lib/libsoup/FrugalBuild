# Compiling time: 1.34 SBU
# Maintainer: Baste <baste@frugalware.org>
# Contributor: bouleetbil <bouleetbil@frogdev.info>

options+=('asneeded')

pkgname=libsoup
pkgver=2.45.92
pkgrel=1
pkgdesc="An HTTP library implementation in C"
url="http://www.gnome.org/"
depends=('glib2>=2.39.92' 'gnutls>=2.12.12' 'libxml2>=2.7.8' 'sqlite3')
makedepends=('gobject-introspection>=1.39.90' 'intltool')
groups=('lib')
archs=('i686' 'x86_64')
_F_gnome_devel="y"
_F_gnome_ext=".tar.xz"
Finclude gnome
sha1sums=('3fc923c939eca01bf0226c0ea117f9d3a762e5cb')

subpkgs=("libsoup-gnome")
subdescs=('libsoup with gnome support')
subdepends=("glib-networking>=2.39.90")
subrodepends=("libsoup")
subgroups=('gnome gnome-minimal')
subarchs=('i686 x86_64')

build() {
	Fcd
	Fbuild
	Fsplit libsoup-gnome usr/lib/libsoup-gnome*
	Fsplit libsoup-gnome usr/include/libsoup-gnome*
	Fsplit libsoup-gnome usr/lib/pkgconfig/libsoup-gnome*

	make distclean || Fdie

	Fmake --without-gnome
	Fmakeinstall
}

# optimization OK
