pkgname=libsoup
pkgver=2.52.1
pkgrel=1
pkgdesc="An HTTP library implementation in C"
url="http://www.gnome.org/"
depends=('glib2>=2.46.0-2' 'gnutls>=3.4.5' 'libxml2>=2.9.2-2' 'libgcrypt>=1.6.4' 'sqlite3>=3.8.11.1-2')
makedepends=('gobject-introspection>=1.46.0' 'intltool' 'vala')
groups=('lib')
archs=('i686' 'x86_64')
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome
sha1sums=('325e47144529813ac7670351aeb6c880c498dd92')

subpkgs=("libsoup-gnome")
subdescs=('libsoup with gnome support')
subdepends=("glib-networking>=2.46.0")
subrodepends=("libsoup")
subgroups=('gnome gnome-minimal')
subarchs=('i686 x86_64')

build() {
	Fcd
	Fbuild
	Fsplit libsoup-gnome usr/lib/libsoup-gnome*
	Fsplit libsoup-gnome usr/include/libsoup-gnome*
	Fsplit libsoup-gnome usr/lib/pkgconfig/libsoup-gnome*

	make distclean || Fdie

	Fmake --without-gnome
	Fmakeinstall
}

# optimization OK
