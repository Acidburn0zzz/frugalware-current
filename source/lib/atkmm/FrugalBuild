options+=('asneeded')

pkgname=atkmm
pkgver=2.23.3
pkgrel=1
pkgdesc="C++ interface for atk"
url="http://www.gnome.org/"
depends=('libsigc++2' 'atk' 'glibmm')
groups=('lib')
archs=('i686' 'x86_64')
_F_gnome_devel="y"
_F_gnome_ext=".tar.xz"
Finclude gnome
sha1sums=('63cd851a92dc6d4409db0e73e2b7c9d058a1f0cc')

subpkgs=("$pkgname-docs")
subdescs=("atkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64')

build()
{
	Fbuild
	Fsplit $pkgname-docs usr/share/doc
}
# optimization OK
