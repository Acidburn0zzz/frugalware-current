pkgname=check
pkgver=0.9.4
pkgrel=1
pkgdesc="Check is a unit test framework for C."
url="http://check.sourceforge.net/"
depends=()
groups=('lib')
archs=('i686' 'x86_64')
Finclude sourceforge
sha1sums=('ddada746cd60bd4fb603ee348a213fa41ae18373')

build()
{
    if [ "$CARCH" == "x86_64" ]
    then
        export CFLAGS="$CFLAGS -fPIC"
    fi
    Fbuild
}

# optimization OK
