pkgname=libksba
pkgver=0.9.11
pkgrel=1
pkgdesc="Libksba  is a CMS and X.509 access library."
url="http://www.gnupg.org"
depends=('glibc')
groups=('lib')
install=$pkgname.install
up2date=`lynx -dump http://www.gnupg.org/\(en\)/download/index.html |grep libksba.*tar |sed -n -e 's/.*a-\(.*\)\.t.*/\1/;s/-/_/;1 p'`
source=(ftp://ftp.gnupg.org/gcrypt/alpha/libksba/$pkgname-$pkgver.tar.gz)
md5sums=('f21912398467e0c93ae1abeb8f6b3a3d')

build() {
	Fmake
	Fmakeinstall
	Frm usr/info/dir
}

