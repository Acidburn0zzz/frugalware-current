diff -urN glib-2.12.7.orig/bindings/glist.i glib-2.12.7/bindings/glist.i
--- glib-2.12.7.orig/bindings/glist.i	1970-01-01 01:00:00.000000000 +0100
+++ glib-2.12.7/bindings/glist.i	2007-01-13 08:06:07.000000000 +0000
@@ -0,0 +1,12 @@
+%module glist
+%nodefaultctor;        /* Don't create default constructors */
+%include "cpointer.i"
+
+/* Create a casting function */
+%pointer_cast(gpointer, char *, gpointer_to_char);
+%pointer_cast(char *, gpointer, char_to_gpointer);
+
+%pointer_cast(int,    GList*, int_to_glist);
+%pointer_cast(int,    guint, int_to_guint);
+%pointer_cast(guint,    int, guint_to_int);
+%include "glist.h"
diff -urN glib-2.12.7.orig/bindings/python/Makefile glib-2.12.7/bindings/python/Makefile
--- glib-2.12.7.orig/bindings/python/Makefile	1970-01-01 01:00:00.000000000 +0100
+++ glib-2.12.7/bindings/python/Makefile	2007-01-13 08:06:07.000000000 +0000
@@ -0,0 +1,47 @@
+CFLAGS += $(shell python -c 'from distutils import sysconfig; print "-I" + sysconfig.get_python_inc()')
+CFLAGS += -I../../ -I../../glib
+CFLAGS += -DSWIG_PYTHON_SILENT_MEMLEAK
+ifeq ($(shell arch),x86_64)
+CFLAGS += -fPIC
+endif
+LDFLAGS += -L../../glib/.libs -lglib-2.0
+LIBDIR += $(shell python -c 'from distutils import sysconfig; print sysconfig.get_python_lib()')
+
+all: _glist.so glist.pyc
+
+_glist.so: glist_wrap.o
+	$(CC) -shared -Wl,-soname,$@ -o $@ $^ $(LDFLAGS)
+
+glist_wrap.o: glist_wrap.c
+	$(CC) $(CFLAGS) -c -o $@ -include glist.h $^
+
+glist_wrap.c:
+	cp ../../glib/glist.h ./
+	cp ../glist.i ./
+	# no GCrap thx
+	sed -i '/^\(^[^#]*\| \)G_[A-Z]/s/G_[A-Z_]\+//' glist.h
+	swig -python glist.i
+	# strip the unnecessary prefixes
+	sed -i 's/^g_list_//' glist.py
+
+glist.pyc: glist.py
+	python -c "import compileall; compileall.compile_dir('.',1,'.')"
+
+glist.py: glist_wrap.c
+
+install: install-so install-py
+
+install-so: _glist.so
+	mkdir -p $(DESTDIR)$(LIBDIR)
+	install $^ $(DESTDIR)$(LIBDIR)
+
+install-py: glist.py glist.pyc
+	install -m644 $^ $(DESTDIR)$(LIBDIR)
+
+clean:
+	rm -f _glist* glist{.h,.i,.py*,_wrap*}
+
+distclean: clean
+	rm -f Makefile
+
+check:
