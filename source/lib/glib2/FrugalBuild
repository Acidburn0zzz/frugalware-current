pkgname=glib2
realname=glib
pkgver=2.8.3
pkgrel=1
pkgdesc="Common C routines used by GTK+2 and other libraries"
url="http://www.gtk.org/"
depends=('glibc')
makedepends=('gtk-doc')
groups=('lib')
archs=('i686' 'x86_64')
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/glib/$preup2date/glib-$pkgver.tar.bz2)
sha1sums=('bfd9942f049be7cd66452ae8a310cb44cb72f5ac')

build() {
	Fcd glib-$pkgver
	Fmake --enable-gtk-doc || return 1
	Fmakeinstall || return 1
}

