depends=('glibc')
makedepends=('gtk-doc')
groups=('lib' 'chroot-core')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_gnome_name="glib"
Finclude gnome
_F_cd_path="glib-$pkgver"
Fconfopts="$Fconfopts --enable-gtk-doc --enable-static"
