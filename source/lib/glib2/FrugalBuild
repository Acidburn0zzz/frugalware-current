pkgname=glib2
realname=glib
pkgver=2.10.2
pkgrel=1
pkgdesc="Common C routines used by GTK+2 and other libraries"
url="http://www.gtk.org/"
depends=('glibc')
makedepends=('gtk-doc')
groups=('lib')
archs=('i686' 'x86_64')
options=('scriptlet')
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/glib/$preup2date/glib-$pkgver.tar.bz2)
sha1sums=('14d055725a4fa347bc4c11d6f52ec5268da2454f')

build() {
	Fcd glib-$pkgver
	Fbuild --enable-gtk-doc
}

# optimalization OK
