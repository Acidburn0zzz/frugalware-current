pkgname=glib2
realname=glib
pkgver=2.8.2
pkgrel=1
pkgdesc="Common C routines used by GTK+2 and other libraries"
url="http://www.gtk.org/"
depends=('glibc')
makedepends=('gtk-doc')
groups=('lib')
archs=('i686' 'x86_64')
[ -e ../../gnome/up2date.gnome ] && . ../../gnome/up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/glib/$preup2date/glib-$pkgver.tar.bz2)
sha1sums=('e8243ee03bd167f4b6158cbca8d0105ba9f4e353')

build() {
	Fcd glib-$pkgver
	Fmake --enable-gtk-doc || return 1
	Fmakeinstall || return 1
}

