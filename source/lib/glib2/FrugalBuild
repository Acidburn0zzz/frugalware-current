# Compiling time: ~2 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>
# Contributor: VMiklos <mamajom@axelero.hu>

pkgname=glib2
realname=glib
pkgver=2.6.4
pkgrel=1
pkgdesc="Common C routines used by GTK+2 and other libraries"
url="http://www.gtk.org/"
depends=('glibc' 'pkgconfig')
groups=('lib')
archs=('i686')
[ -e ../../gnome/up2date.gnome ] && . ../../gnome/up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/glib/$preup2date/glib-$pkgver.tar.bz2)
md5sums=('af7eeb8aae764ff763418471ed6eb93d')

build() {
	cd $startdir/src/glib-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
