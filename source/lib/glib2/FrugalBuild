pkgname=glib2
realname=glib
pkgver=2.12.3
pkgrel=1
pkgdesc="Common C routines used by GTK+2 and other libraries"
url="http://www.gtk.org/"
depends=('glibc')
makedepends=('gtk-doc')
groups=('lib' 'chroot-core')
archs=('i686' 'x86_64')
options=('scriptlet')
Finclude gnome
_F_cd_path="glib-$pkgver"
source=(http://ftp.gnome.org/pub/gnome/sources/glib/${pkgver%.?}/glib-$pkgver.tar.bz2)
Fconfopts="$Fconfopts --enable-gtk-doc --enable-static"
sha1sums=('117abb0e73fddb46650f0f38bfbbddc658dc2ddf')

