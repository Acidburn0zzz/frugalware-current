pkgname=glib2
realname=glib
pkgver=2.10.0
pkgrel=1
pkgdesc="Common C routines used by GTK+2 and other libraries"
url="http://www.gtk.org/"
depends=('glibc')
makedepends=('gtk-doc')
groups=('lib')
archs=('i686' 'x86_64')
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/glib/$preup2date/glib-$pkgver.tar.bz2)
sha1sums=('550c22448ff99bba4ab69624b023b9786b0da101')

build() {
	Fcd glib-$pkgver
	Fbuild --enable-gtk-doc
}

