pkgname=libssh
pkgver=0.7.3
pkgrel=1
pkgdesc="The SSH library"
url="http://www.libssh.org/"
depends=('openssl>=1.0.2-3' 'zlib>=1.2.8-4' 'libgcrypt>=1.6.4-3')
makedepends=('doxygen')
groups=('lib')
archs=('i686' 'x86_64' 'arm')
#up2date="Flasttar https://red.libssh.org/projects/libssh/files"
up2date="lynx -dump  http://www.libssh.org/ | grep -a -m1 '^\[.*]' | sed 's/.*h \(.*\) (.*/\1/'"
source=(http://git.libssh.org/projects/${pkgname}.git/snapshot/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('e0790ef9082b58c2ef39274e91cdf10030d6565a')
_F_cmake_confopts="-DWITH_SSH1=ON -DWITH_GCRYPT=ON -DWITH_INTERNAL_DOC=ON"
Finclude cmake

# optimization OK
