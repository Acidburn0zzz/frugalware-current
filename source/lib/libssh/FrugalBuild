options+=('asneeded')

pkgname=libssh
pkgver=0.5.3
pkgrel=2arcturus1
pkgdesc="The SSH library"
url="http://www.libssh.org/"
depends=('openssl>=1.0.0' 'zlib')
groups=('lib')
archs=('i686' 'x86_64' 'arm')
up2date="Flasttar $url/files/${pkgver%%.?}"
source=($url/files/${pkgver%%.?}/libssh-$pkgver.tar.gz)
sha1sums=('63f5f9e7d8b8e936048a51998a6f9be0e86866a7')
Finclude cmake

# FSA fix ***
source=(${source[@]} CVE-2013-0176.patch CVE-2014-0017.patch)
sha1sums=(${sha1sums[@]} '97d39d528276a498358fee3196810a6ea6113048' \
                         'cf75f2af68d8d82be628bed64a060d5665d8c593')
