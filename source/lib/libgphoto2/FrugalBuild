pkgname=libgphoto2
pkgver=2.2.1
pkgrel=1
pkgdesc="A portable library to gives access to many digital cameras"
url="http://www.gphoto.org"
groups=('lib')
archs=('i686' 'x86_64')
depends=('libjpeg' 'hal' 'libexif' 'avahi-compat' 'libtool')
Finclude sourceforge
source=(${source[@]} libgphoto2-2.2.x-includes.patch)
up2date="lynx -dump 'http://prdownloads.sourceforge.net/gphoto/?sort_by=date&sort=desc'|grep libgphoto2-[0-9\.]*.tar.gz$|sed -n 's/.*2-\(.*\)\.t.*/\1/;1 p'"
sha1sums=('6636ae0020c201abaea74f9e3ea2d4bd404587c0' \
          'f4b6ce1ac65c12fdfb81945faaa6c108a13aa5e6')

build() {
	Fbuild
	Fmkdir /usr/share/libgphoto2/$pkgver/linux-hotplug
	Fcpr $pkgname-$pkgver/packaging/linux-hotplug/usb* /usr/share/libgphoto2/$pkgver/linux-hotplug/
}

# optimization OK
