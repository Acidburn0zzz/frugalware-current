pkgname=libgphoto2
pkgver=2.1.5
pkgrel=3
pkgdesc="A portable library to gives access to many digital cameras"
url="http://www.gphoto.org"
groups=('lib')
depends=('glibc' 'libusb' 'libexif' 'libjpeg')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/gphoto/?sort_by=date&sort=desc'|grep libgphoto2-[0-9\.]*.tar.gz$|sed -n 's/.*2-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/gphoto/$pkgname-$pkgver.tar.gz)
md5sums=('210844f0d88f58842917af6eaff06382');

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --with-exif
	make || return 1
	make prefix=$startdir/pkg/usr install
	mkdir -p $startdir/pkg/usr/share/libgphoto2/$pkgver/linux-hotplug
	cp -r packaging/linux-hotplug/usb* \
		$startdir/pkg/usr/share/libgphoto2/$pkgver/linux-hotplug/
}

