# Last Modified: Mon, 14 Mar 2005 13:09:43 +0100
# Compiling Time: ~11 seconds
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>
# Contributor: Shrift <shrift@frugalware.org>

pkgname=libdvdcss
pkgver=1.2.8
pkgrel=2
pkgdesc="libdvdcss is a cross-platform library for transparent DVD device access with on-the-fly CSS decryption."
url="http://www.videolan.org/libdvdcss/"
groups=('lib')
depends=('glibc')
up2date="lynx -dump 'http://download.videolan.org/pub/libdvdcss/?C=M;O=D'|grep libdvdcss/|grep 1.2|sed -ne 's|.*ss/\(.*\)\//*|\1|;1 p'"
source=(http://freshmeat.net/redir/libdvdcss/16066/url_tgz/$pkgname-$pkgver.tar.gz)
groups=('lib')
md5sums=('e35e4240b6ca0b66a0218065dffe6adb')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
