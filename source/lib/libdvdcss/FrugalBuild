archs=('i686' 'x86_64')
depends=('glibc')
up2date="lynx -dump 'http://download.videolan.org/pub/libdvdcss/?C=M;O=D'|grep libdvdcss/|grep 1.2|sed -ne 's|.*ss/\(.*\)\//*|\1|;1 p'"
source=(http://freshmeat.net/redir/libdvdcss/16066/url_tgz/$pkgname-$pkgver.tar.gz)
