# arg 1:  the new package version
post_install() {
  /sbin/ldconfig -r .
  /usr/X11R6/bin/fc-cache
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install $1
}

# arg 1:  the old package version
pre_remove() {
  /bin/true
}

post_remove() {
  /bin/true
}

op=$1
shift

$op $*
