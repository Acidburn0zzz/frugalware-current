pkgname=fontconfig
pkgver=2.2.3
pkgrel=2
pkgdesc="A library for configuring and customizing font access"
url="http://www.freedesktop.org/software/fontconfig"
depends=('expat' 'freetype2' 'zlib')
backup=('etc/fonts/local.conf' 'etc/fonts/fonts.conf')
up2date=`lynx -dump 'http://freedesktop.org/~fontconfig/release/?M=D'|grep tar.gz|grep -v '\.9'|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 4|sed 's/.tar.gz//'|cut -d - -f 2`
source=(http://freedesktop.org/~fontconfig/release/fontconfig-$pkgver.tar.gz)
md5sums=('2466a797d645cda5eb466080fdaec416')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr/X11R6 --sysconfdir=/etc
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
