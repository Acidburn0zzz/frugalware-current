pkgname=fontconfig
pkgver=2.12.1
pkgrel=5
pkgdesc="A library for configuring and customizing font access"
url="http://fontconfig.org/"
depends=('freetype2>=2.7.1-2' 'expat>=2.2.0-2' 'bzip2>=1.0.6-14')
rodepends=('frugalware')
groups=('lib' 'misc-fonts')
archs=("x86_64")
up2date="lynx -dump http://fontconfig.org/release|Flasttar"
options=('force')
source=($url/release/$pkgname-$pkgver.tar.gz \
	25-no-bitmap.conf \
	0001-Avoid-conflicts-with-integer-width-macros-from-TS-18.patch)
sha1sums=('57a5323ebdb58b3f8062a735e0927b0f5b9a7729' \
          '72ed9989eb96475b0c077dda2e47188583d63420' \
          'dabe7760e264c1640938c96c06dc706233a60150')

## NOTE: !!! DO _NOT_ BUMP , CHANGE or whatever else without permission from m8r or vmiklos !!! ##
Fconfopts="	--with-add-fonts=/usr/share/fonts/X11"
_F_cross32_simple_auto="yes"
_F_cross32_delete=('usr/share' 'var')
Finclude cross32

build()
{

	Fbuild_cross32
	Ffile 25-no-bitmap.conf etc/fonts/conf.d/
}

# optimization OK
