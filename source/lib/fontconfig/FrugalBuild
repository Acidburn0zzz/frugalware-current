# Compiling time: 0.32 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: VMiklos <vmiklos@frugalware.org>

pkgname=fontconfig
pkgver=2.4.0
pkgrel=1
pkgdesc="A library for configuring and customizing font access"
url="http://fontconfig.org/"
depends=('libxml2' 'freetype2>=2.2.1' 'frugalware')
groups=('lib' 'misc-fonts')
archs=('i686' 'x86_64')
## stable 
up2date="lynx -dump -source $url|grep -m1 'The latest version'|sed 's/.*latest.*is \(.*\).*which.*/\1/'|tr -d [:blank:]"
source=(http://fontconfig.org/release/fontconfig-$pkgver.tar.gz \
	01-frugalware-confs.patch \
	02-generic.conf-move-dejavu-and-luxi-befor-vera.patch \
	03-latin.conf-move-dejavu-and-luxi-befor-vera.patch)
sha1sums=('132b0567740a04d89cd1eef0dd66b43ca32538c0' \
          '7a5f9c4d6d7978202ab97304b71393ef32a33884' \
          'd6e4c542d747b422b0c5221abe21476ac05697b2' \
          'e1c3d5c855149692d9fc7278fa57ad3c6a43e919')
	

## NOTE: !!! DO _NOT_ BUMP , CHANGE or whatever else without permission from m8r or vmiklos !!! ##

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake \
		--with-add-fonts=/usr/lib/X11/fonts \
		--enable-libxml2 \
		--with-docdir=/usr/share/doc/$pkgname-$pkgver
	Fmakeinstall
	
}

# optimization OK
