# Compiling Time: 1 minutes
# Maintainer: Peter BARABAS <z0d@artifact.hu>

pkgname=aalib
pkgver=1.4rc4
pkgrel=3
pkgdesc="A portable ascii art graphics library."
url="http://aa-project.sourceforge.net/aalib/"
groups=('lib')
backup=()
depends=('glibc' 'gpm' 'ncurses')
up2date="lynx -dump http://aa-project.sourceforge.net/aalib/|perl -wlne 'if(/Version (\d\.\d+(rc\d+)?) released/) { print $1; exit;}'"
source=(http://dl.sourceforge.net/aa-project/$pkgname-$pkgver.tar.gz)
md5sums=('d5aa8e9eae07b7441298b5c30490f6a6')
install=$pkgname.install

build() {
	cd $startdir/src/$pkgname-*.*
	./configure --prefix=/usr --with-slang-driver=no --with-curses-driver=yes --without-x

	make || return 1

	make prefix=$startdir/pkg/usr install
	rm $startdir/pkg/usr/info/dir
}

# vim: ft=sh
