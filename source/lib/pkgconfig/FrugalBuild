pkgname=pkgconfig
pkgver=0.20
pkgrel=1
pkgdesc="A system for managing library compile/link flags"
url="http://freedesktop.org/wiki/Software_2fpkgconfig"
groups=('lib' 'devel-core')
depends=('glibc')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.freedesktop.org/software/pkgconfig/releases/?C=M;O=D' | grep tar\.gz | sed -n 's/.*-\([0-9\.]\+\)\.tar.*/\1/;1 p'"
source=(http://www.freedesktop.org/software/pkgconfig/releases/pkg-config-$pkgver.tar.gz \
$pkgname.sh)
sha1sums=('285a486e2cf97e3c6bcb3eec9a7fed299031eb6e' \
          '37676ef8d48bb12ac280fe5e876c61073022f8d4' \
          'd84ce208204efee6a1381335f9575959c248ec82')

build() {
	Fcd pkg-config-$pkgver
	Fmake --enable-indirect-deps || return 1
	Fmakeinstall
	install -D -m755 -o root -g root $startdir/src/pkgconfig.sh \
		$startdir/pkg/etc/profile.d/pkgconfig.sh
}

# optimalization ok
# vim: ft=sh
