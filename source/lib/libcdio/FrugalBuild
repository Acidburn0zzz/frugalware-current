pkgrel=1
pkgdesc="Portable CD-ROM I/O library"
url="http://www.gnu.org/software/libcdio/"
groups=('lib')
archs=('i686' 'x86_64' 'ppc')
depends=('ncurses' 'libcddb')
makedepends=('cdparanoia' 'cdrdao')
