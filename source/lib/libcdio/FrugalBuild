pkgname=libcdio
pkgver=0.74
pkgrel=1
pkgdesc="Portable CD-ROM I/O library"
url="http://www.gnu.org/software/libcdio/"
depends=('glibc' 'popt' 'vcdimager>=0.7.21-2')
up2date="lynx -dump 'http://ftp.gnu.org/gnu/libcdio/?M=D'|grep tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(ftp://ftp.cs.tu-berlin.de/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('2b1b03d96a992d171ebf2b13bcdcd866')
license="GPL"
groups=(lib)

build() {
    Fcd
    Fmake || exit 1
    Fmakeinstall || exit 1
    Frm /usr/info/dir
}

