pkgname=libmng
pkgver=1.0.9
pkgrel=2
pkgdesc="A collection of routines used to create and manipulate MNG format graphics files"
url="http://www.libmng.com/"
groups=('lib')
archs=('i686' 'x86_64' 'ppc')
depends=('lcms')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/libmng/?sort_by=date&sort=desc'|grep libmng-[0-9\.]*.tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('d32e939ec95caff7839c6c9a5896e4d575c77d35')

build()
{
	Fcd
	cp $startdir/src/$pkgname-$pkgver/makefiles/configure.in $startdir/src/$pkgname-$pkgver/configure.in
	cp $startdir/src/$pkgname-$pkgver/makefiles/Makefile.am $startdir/src/$pkgname-$pkgver/Makefile.am
	autoreconf --force --install
	Fmake || return 1
	Fmakeinstall || return 1
}

# optimalization ok

