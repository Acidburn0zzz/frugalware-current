pkgname=liboil
pkgver=0.3.8
pkgrel=1
pkgdesc="Libaray of Optimized Inner Loops"
url="http://liboil.freedesktop.org/"
depends=('glib2' 'libstdc++')
makedepends=('gtk-doc')
groups=('lib')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump 'http://liboil.freedesktop.org/download/?C=M;O=D' |grep liboil |grep tar |sed -n -e 's/.*l-\(.*\)\.t.*/\1/' -e '1 p'"
source=(http://liboil.freedesktop.org/download/$pkgname-$pkgver.tar.gz \
	liboil-0.3.3-gccoptfixes.patch)
sha1sums=('ed6002cf02fbe9d248c3129578cbf6d24ebe3072' \
	  '5c8acdee63930a00a39bc25a5211b40c977924d9')

build() {
	Fbuild --enable-gtk-doc
}

