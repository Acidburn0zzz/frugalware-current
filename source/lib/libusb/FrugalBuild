pkgname=libusb
pkgver=0.1.11
pkgextraver=
pkgrel=1
pkgdesc="A library which allows userspace application access to USB devices"
url="http://libusb.sourceforge.net/"
depends=('libstdc++')
groups=('lib')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="lynx -dump http://libusb.sourceforge.net/|grep current|sed \"s/.*]\(.*\)\. .*/\1/;s/$pkgextraver//\""
sha1sums=('59e043bb92f8eb17a1172d01e365b0e042654356')
[ "$CARCH" == "x86_64" ] && \
	source=(${source[@]} libusb-wrong-int-fix_cvs.patch) && \
	sha1sums=(${sha1sums[@]} '4f516e83a821d14d24b16c6fa166fc5e322e1298')

# NOTE: libusb-wrong-int-fix_cvs.patch needed only for 0.1.11
#       maybe it will be fixed in next release. Patch backported from CVS

build()
{
	Fcd $pkgname-$pkgver$pkgextraver
	Fbuild --disable-build-docs
}

# optimalization OK
