pkgname=libusb
pkgver=0.1.10
pkgextraver=a
pkgrel=2
pkgdesc="A library which allows userspace application access to USB devices"
url="http://libusb.sourceforge.net/"
depends=('glibc' 'gcc')
groups=('lib')
up2date=`lynx -dump http://libusb.sourceforge.net/|grep current|sed "s/.*]\(.*\)\. .*/\1/;s/$pkgextraver//"`
source=(http://dl.sourceforge.net/$pkgname/$pkgname-$pkgver$pkgextraver.tar.gz)
md5sums=('c6062b29acd2cef414bcc34e0decbdd1')

build() {
	cd $startdir/src/$pkgname-$pkgver$pkgextraver
	./configure --prefix=/usr --disable-build-docs
	
	make || return 1

	make DESTDIR=$startdir/pkg install
}

