pkgname=libusb
pkgver=0.1.8
pkgrel=1
pkgdesc="A library which allows userspace application access to USB devices"
url="http://libusb.sourceforge.net/"
depends=('glibc')
up2date=`lynx -dump http://libusb.sourceforge.net/|grep current|cut -d ] -f 2|sed 's/\. / /'|cut -d ' ' -f 1`
source=(http://dl.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('75655870fb7bb661e6fbd57cbfe81bb2')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1

	make DESTDIR=$startdir/pkg install
}

