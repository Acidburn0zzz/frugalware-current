pkgname=gmp
pkgver=4.2
pkgrel=1
pkgdesc="GNU multiple precision arithmetic library"
url="http://swox.com/gmp/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('glibc' 'texinfo')
up2date="lynx -dump $url |grep tar.bz2 |sed -ne 's/.*p-\(.*\).t.*/\1/;1p'"
groups=('lib')
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('5f15eec3615d0e948cb258c4e7e33b4a9c73d03f')
install=$pkgname.install

build()
{
	Fbuild --enable-mpfr \
		--enable-cxx \
		--disable-static \
		--with-gnu-ld
}

# optimalization OK
