pkgname=gmp
pkgver=4.1.4
pkgrel=1
pkgdesc="GNU multiple precision arithmetic library"
url="http://swox.com/gmp/"
depends=('glibc')
up2date=`lynx -dump $url|grep Current|sed 's/.* \(.*\)$/\1/'`
source=(http://swox.com/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('0aa7d3b3f5b5ec5951e7dddd6f65e891')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
