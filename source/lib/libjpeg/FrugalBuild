pkgname=libjpeg
pkgver=6b
pkgrel=5
pkgdesc="Library of JPEG support functions"
url="ftp://ftp.uu.net/graphics/jpeg/"
depends=('glibc')
groups=('lib')
up2date="wget --passive-ftp -O - -q $url |grep jpegsrc |grep tar.gz|tail -n 1|cut -d '>' -f 2|cut -d '<' -f 1|sed 's/v//'|cut -d . -f 2"
source=($url/jpegsrc.v$pkgver.tar.gz 01-autoconf-update-x86_64.patch0)
md5sums=('dbd5f3b47ed13132f04c685d608a7547' '81e8f388571f0f1a92726cb4215eca42')

build() {
	[ "$CARCH" == "x86_64" ] && patch -p0 < 01-autoconf-update-x86_64.patch0
	cd $startdir/src/jpeg-$pkgver
	./configure --prefix=/usr --enable-shared --enable-static
	
	make || return 1
	
	mkdir -p $startdir/pkg/usr/{bin,lib,include,man/man1}
	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh

