pkgname=sqlite3
pkgver=3.2.1
pkgrel=1
pkgdesc="A C library that implements an SQL database engine"
url="http://www.sqlite.org/"
depends=('readline')
replaces=('sqlite2')
groups=('lib')
up2date="lynx -dump http://www.sqlite.org/download.html|grep sqlite-3.*tar.gz|sed -n 's/.*e-\(.*\)\.t.*/\1/;1 p'"
source=(http://www.sqlite.org/sqlite-$pkgver.tar.gz)
md5sums=('ccf3831c2f67452d444c5e5e2c7ca6f0')

build() {
	cd $startdir/src/sqlite-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg/ install
}
# optimalization ok
# vim: ft=sh
