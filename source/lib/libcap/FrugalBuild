pkgname=libcap
pkgver=1.10
pkgrel=2
pkgdesc="POSIX 1003.1e capabilities"
url="http://www.kernel.org/pub/linux/libs/security/linux-privs/"
groups=('lib')
archs=('i686')
depends=('glibc')
up2date="lynx -dump 'http://www.kernel.org/pub/linux/libs/security/linux-privs/kernel-2.4/?C=M;O=D'|grep tar.bz2$|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.kernel.org/pub/linux/libs/security/linux-privs/kernel-2.4/$pkgname-$pkgver.tar.bz2)
md5sums=('4426a413128142cab89eb2e6f13d8571')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make prefix=$startdir/pkg/usr install
	rm -r $startdir/pkg/usr/man/man2
}

# vim: ft=sh
