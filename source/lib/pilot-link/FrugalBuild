pkgname=pilot-link
pkgver=0.11.8
pkgrel=3
pkgdesc="A suite of tools for connecting to PalmOS handheld devices"
url="http://www.pilot-link.org/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('readline' 'ncurses' 'libpng' 'libusb')
up2date="lynx -dump $url/filestore2 |grep link-.*tar |sed -ne 's/.*link-\(.*\).t.*/\1/;1p'"
source=(http://www.pilot-link.org/files/$pkgname-$pkgver.tar.gz)
sha1sums=('44ac400eb8734d9ac9299e7c8e867edfd2274842')

build()
{
	Fbuild --localstatedir=/var/lib || return 1
}

