pkgname=pilot-link
pkgver=0.11.8
pkgrel=2
pkgdesc="A suite of tools for connecting to PalmOS handheld devices"
url="http://www.pilot-link.org/"
groups=('lib')
depends=('glibc' 'gcc' 'readline' 'ncurses' 'libpng')
install=$pkgname.install
group=('lib') 
up2date="lynx -dump http://www.pilot-link.org/filestore2 |grep \"link-\"|sed -n 's/.*link-\(.*\)\.tar.*/\1/;1 p'"
source=(http://www.pilot-link.org/source/pilot-link-$pkgver.tar.gz)
md5sums=('93e65404e6584b4af3f57118561eea6c')

build()
{
	Fbuild --localstatedir=/var/lib
}

