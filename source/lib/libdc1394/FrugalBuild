# Last Modified: Thu, 02 Jun 2005 10:58:26 +0000
# Compiling Time: ~1 minute
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=libdc1394
pkgver=1.1.0
pkgrel=1
pkgdesc="1394-Based Digital Camera Control Library"
url="http://libdc1394.sourceforge.net/"
depends=('glibc' 'libraw1394')
groups=('lib')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=8157 |grep libdc1394 |grep tar |sed -n -e 's/.*4-\(.*\).t.*/\1/' -e '1 p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz \
	libdc1394-no_dcmultiview_compile.patch)
md5sums=('5606586f94fc5d6b4ada8d514a405d0f' '1ad60981a505a66741629f0594269fda')

build() {
	Fcd
	Fpatchall || return 1
    	aclocal
	autoheader
	autoconf
	automake -a -c -f
	Fmake --without-x || return 1
	Fmakeinstall || return 1
}

