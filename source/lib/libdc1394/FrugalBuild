pkgname=libdc1394
pkgver=2.0.0_rc1
pkgrel=1
pkgdesc="a program to extract Microsoft Cabinet files"
url="http://sourceforge.net/projects/libdc1394/"
depends=('libraw1394')
groups=('lib')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=8157 |grep libdc1394-2 |grep tar |sed -n -e 's/.*4-\(.*\).t.*/\1/' -e 's/-/_/' -e '1 p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-`echo $pkgver | sed 's/_/-/'`.tar.gz)
sha1sums=('5e4db74082457843eaa05a24443bbe0faa85beef')

build() {
	Fcd $pkgname-`echo $pkgver | sed 's/_/-/'`
	# Fresh up missing script
	cat /usr/share/automake/missing > missing || Fdie
	Fbuild --without-x
}

# optimization OK
