pkgname=libexif
pkgver=0.6.12
pkgrel=1
pkgdesc="Exchangeable Image File Format tag library"
url="http://sourceforge.net/projects/libexif"
depends=('glibc')
groups=('lib')
up2date="lynx -dump http://sourceforge.net/projects/libexif|grep 'libexif '|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 3|cut -d ] -f 2"
source=(http://belnet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('69501aaf0862a79aaeeb73e81e8c1306' 'd1d58e15ca35a405a1a232adba6e907d')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make prefix=$startdir/pkg/usr install
}

