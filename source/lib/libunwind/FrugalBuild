archs=('i686' 'x86_64')
_F_archive_grepv="rc"
up2date="Flasttar http://download.savannah.gnu.org/releases/libunwind"
source=(http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.gz \
	libunwind-1.1-lzma.patch)
