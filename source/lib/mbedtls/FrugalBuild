# Compiling Time: 26.46 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=mbedtls
pkgver=2.3.0
pkgextraver="-gpl"
pkgrel=3
pkgdesc="Portable cryptographic and SSL/TLS library, aka polarssl"
archs=('i686' 'x86_64')
groups=("lib")
url="https://tls.mbed.org"
source=("$url/download/$pkgname-$pkgver$pkgextraver.tgz" \
	non_embedded.patch \
	fixes.patch )
up2date="Flasttar $url/download"
sha1sums=('c56d2743a2158fccbf5536d18a11196eca76fc76' \
          '04ce990f056078cf8ce5134e011b888791e294b1' \
          '0786d3277dca164d2d0b479bf0d87e422147bf99')
depends=('glibc')
options=('static')
_F_archive_ver="$pkgver"
export  LDFLAGS+=" -fPIC"
_F_make_opts+=" SHARED=1 no_test"

build() {
	Fbuild
	Fmkdir usr/bin/
	Fmv bin/ usr/
	Fmv include/ usr/
	Fmv lib/ usr/
}

