pkgname=popt
pkgver=1.10.7
pkgrel=1
pkgdesc="A commandline option parser"
url="http://freshmeat.net/projects/popt/"
depends=('glibc' 'gettext')
groups=('lib' 'chroot-core')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump ftp://jbj.org/pub/rpm-4.4.x|grep 'tar.gz'|grep 'popt-'|sort -n -r|head -n 1|sed 's/.*-\(.*\).t.*/\1/'"
source=(ftp://jbj.org/pub/rpm-4.4.x/$pkgname-$pkgver.tar.gz)

build() {
	Fsed "@MARK64@" "" Makefile.am
	Fbuild
}
