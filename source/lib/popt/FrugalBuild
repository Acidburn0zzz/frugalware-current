up2date="wget --passive-ftp -O - -q ftp://ftp.rpm.org/pub/rpm/dist/rpm-4.1.x/ |grep popt |grep tar.gz |tail -n 1|cut -d '>' -f 2|cut -d '<' -f 1|sed 's/.tar.gz//'|cut -d - -f 2"
source=(ftp://ftp.rpm.org/pub/rpm/dist/rpm-4.1.x/$pkgname-$pkgver.tar.gz)
