pkgname=freetype2
pkgver=2.1.10
pkgrel=1
pkgdesc="TrueType font rendering library - 2.0 series"
url="http://freetype.sourceforge.net"
groups=('lib')
archs=('i686' 'x86_64')
depends=('zlib')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=3157&package_id=3121'|grep 'freetype-' |sed -e 's/.*type-\(.*\).tar.bz2.*/\1/;q'"
source=(ftp://ftp.ntua.gr/mirror/freetype/freetype-$pkgver.tar.bz2)
md5sums=('a4012e7d1f6400df44a16743b11b8423')

build() {
  cd $startdir/src/freetype-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

#optimalization ok
