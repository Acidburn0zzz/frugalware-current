pkgname=freetype2
pkgver=2.1.9
pkgrel=1
pkgdesc="TrueType font rendering library - 2.0 series"
url="http://freetype.sourceforge.net"
depends=('glibc' 'zlib')
up2date=`lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=3157'|grep -3 freetype2 |sed -n '7 p'|tr -s ' '|cut -d ' ' -f 5|sed 's/.tar.gz//'|cut -d - -f 2`
source=(ftp://ftp.freetype.org/freetype/freetype2/freetype-$pkgver.tar.bz2)
md5sums=('ec1b903e4be5f073caa72458ea58c29c')

build() {
  cd $startdir/src/freetype-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
