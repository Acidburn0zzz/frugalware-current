pkgname=libvorbis
pkgver=1.0.1
pkgrel=1
pkgdesc="Vorbis codec library"
url="http://www.vorbis.com/"
depends=('glibc' 'libogg')
up2date=`lynx -dump 'http://freshmeat.net/projects/libvorbis/?branch_id=13253' |grep -1 Version|tail -n 1|tr -s ' '|cut -d ] -f 2 |cut -d ' ' -f 1`
source=(http://www.vorbis.com/files/1.0.1/unix/$pkgname-$pkgver.tar.gz)
md5sums=('4d6726fd02ce02f6e24824e594b0949a')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
