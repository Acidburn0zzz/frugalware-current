pkgname=libgcrypt
pkgver=1.2.2
pkgrel=1
pkgdesc="Libgcrypt is a general purpose crypto library based on the code used"
url="http://www.gnu.org/directory/security/libgcrypt.html"
groups=('lib')
archs=('i686' 'x86_64')
depends=('libgpg-error' 'texinfo')
up2date="wget --passive-ftp -O - -q ftp://ftp.gnupg.org/gcrypt/$pkgname/|sed -n 's/.*-\([0-9.]\+\).tar.*/\1/;T;p'|sort -r|sed -n '1p'"
source=(ftp://ftp.gnupg.org/gcrypt/$pkgname/$pkgname-$pkgver.tar.bz2)
