# Compiling time: 0.25 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=libidn
pkgver=0.5.20
pkgrel=3
pkgdesc="GNU Libidn is an implementation of the Stringprep,Punycode and IDNA specification."
url="http://www.gnu.org/software/libidn/"
depends=('glibc>=2.7-3')
makedepends=('java-gcj-compat>=1.0.77-2' 'ecj>=3.2.2-4' 'gcc-gcj>=4.3.0-4' 'libtool>=1.5.26-2')
archs=('i686' 'x86_64')
groups=('lib' 'chroot-core')
up2date=$pkgver
source=(http://josefsson.org/$pkgname/releases/$pkgname-$pkgver.tar.gz)

build()
{
	Fbuild --with-gnu-ld \
	--disable-rpath --enable-java
}

# optimization OK

sha1sums=('42b5795bdf58e39d24e57297f383c8a3e54dca64')
