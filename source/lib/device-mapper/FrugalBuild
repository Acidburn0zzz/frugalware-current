pkgname=device-mapper
pkgver=1.01.05
pkgrel=1
pkgdesc="Device mapper ioctl library."
url="http://sources.redhat.com/dm/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('glibc')
up2date="lynx -dump ftp://sources.redhat.com/pub/dm/|grep STABLE|sed -n 's/.*_\(.*\)/\1/;1 p'"
source=(ftp://sources.redhat.com/pub/dm/device-mapper.$pkgver.tgz)
sha1sums=('8b28c277ceb11f8a78f5e91b95036f5a563c7fa9')

build()
{
	Fcd $pkgname.$pkgver
	Fmake
	Fmakeinstall sbindir=$startdir/pkg/sbin libdir=$startdir/pkg/lib install
	Fexerel scripts/devmap_mknod.sh /sbin/devmap_mknod.sh
}

# vim: ft=sh
# optimalization ok
