# Last Modified: Tue, 03 May 2005 21:56:20 +0200
# Compiling Time: ~1 minute
# Maintainer: xbit <xbit.lists@chello.hu>

pkgname=acpi
pkgver=0.09
pkgrel=1
groups=('apps')
archs=('i686')
pkgdesc="Linux ACPI Client"
url="http://grahame.angrygoats.net/acpi.shtml"
depends=('glibc')
up2date="lynx -dump http://grahame.angrygoats.net/acpi.shtml |grep Source|sed -e 's/.*acpi-\(.*\).tar.*/\1/'"
source=(http://grahame.angrygoats.net/source/acpi/acpi-$pkgver.tar.gz)
md5sums=('a5a70595834b487c3a2f9278a3d60768')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$startdir/pkg install
}
