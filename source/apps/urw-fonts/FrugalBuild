# Last modified: Thu, 27 Jan 2005 16:44:32 +0100
# Compiling time: ~1 second
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=urw-fonts
pkgver=1.0.7pre40
pkgrel=1
pkgdesc="Cyrillized free URW fonts"
url="ftp://ftp.gnome.ru/fonts/urw/release/"
depends=('fontconfig>=2.2.3-7')
replaces=('ghostscript-fonts-std')
conflicts=('ghostscript-fonts-std')
install=$pkgname.install
up2date=`wget --passive-ftp -O - -q ftp://ftp.gnome.ru/fonts/urw/release/|grep urw-fonts.*tar.bz2|sed -n 's/.*s-\(.*\)\.t.*/\1/;1 p'`
source=(ftp://ftp.gnome.ru/fonts/urw/release/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('316c05d15d84e3b9aa4e862eb5b7b651' \
	'5b5b4f37abe654fb0d5f6a95a3b6bad5')

build() {
	cd $startdir/src/
	chmod 644 *
	rm {urw-fonts-1.0.7pre40.tar.bz2,$pkgname.install}
	mkfontscale
	mkfontdir
	mkdir -p $startdir/pkg/usr/share/doc/$pkgname-$pkgver
	mv {ChangeLog,COPYING,README*,TODO} $startdir/pkg/usr/share/doc/$pkgname-$pkgver
	mkdir -p $startdir/pkg/usr/share/ghostscript/fonts
	mv * $startdir/pkg/usr/share/ghostscript/fonts
}

# vim: ft=sh
