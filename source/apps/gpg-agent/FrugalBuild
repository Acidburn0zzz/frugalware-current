# Last Modified: Wed, 21 Dec 2005 20:16:14 +0100
# Compiling Time: ~0.23 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=gpg-agent
origname=gnupg
pkgver=1.9.20
pkgrel=1
pkgdesc="gpg-agent is made for handling gpg-keys"
url="http://www.gnupg.org"
depends=('libgcrypt' 'pth' 'zlib')
makedepends=('libgpg-error>=1.0' 'libassuan>=0.6.10' 'libksba=0.9.13')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.gnupg.org/\(en\)/download/index.html |grep gnupg-1.9.*tar |sed -n -e 's/.*g-\(.*\)\.t.*/\1/;s/-/_/;1 p'"
source=(http://ftp.gnupg.org/gcrypt/alpha/gnupg/$origname-$pkgver.tar.bz2)
sha1sums=('557be26c21c114a3b345ce6b177fcb088883f827')

build() {
	Fcd $origname-$pkgver
	Fmake --enable-agent-only
	Fmakeinstall
	# It's not necessary to install these files because they are installed with gnupg
	Frm usr/info
}

# vim: ft=sh

# optimalization OK
