# Compiling Time: 0.21 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=gpg-agent
origname=gnupg
pkgver=2.0.1
pkgrel=1
pkgdesc="gpg-agent is made for handling gpg-keys"
url="http://www.gnupg.org"
depends=('libgcrypt' 'pth')
makedepends=('libgpg-error>=1.0' 'libassuan>=0.9.3' 'libksba>=1.0')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.gnupg.org/\(en\)/download/index.html |grep gnupg-2.0.*tar |sed -n -e 's/.*g-\(.*\)\.t.*/\1/;s/-/_/;1 p'"
source=(http://ftp.gnupg.org/gcrypt/gnupg/$origname-$pkgver.tar.bz2)

build() {
	Fcd $origname-$pkgver
	Fbuild --enable-agent-only
	# It's not necessary to install these files because they are installed with gnupg
	Frm usr/info
}
sha1sums=('ec84ffb1d2ac013dc0afb5bdf8b9df2c838673e9')

# optimization OK
