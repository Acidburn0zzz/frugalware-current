# Last Modified: Mon, 09 May 2005 10:45:20 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=jed
pkgver=0.99r16
pkgrel=1
pkgdesc="An extremely powerful but small emacs-like programmer's editor"
url="http://www.jedsoft.org/jed/"
depends=('slang' 'gpm' 'glibc' 'ncurses')
groups=('apps')
archs=('i686')
up2date="lynx -dump http://www.jedsoft.org/jed/download.html|grep latest|grep -v dev|sed -e 's/.*s \(.*\) an.*/\1/' -e 's/-/r/'"
source=(ftp://space.mit.edu/pub/davis/jed/v`echo $pkgver|sed 's/r.*$//'`/$pkgname-`echo $pkgver|sed 's/r/-/'`.tar.bz2 \
	$pkgname-$pkgver-gpm.diff)
md5sums=('c2bcd89c92a120559865a539c2705999' '8da7ccf532c2e0b6ba97475ff5bd3711')

build() {
	cd $startdir/src/$pkgname-`echo $pkgver|sed 's/r/-/'`
	patch -p1 < $startdir/src/$pkgname-$pkgver-gpm.diff
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
