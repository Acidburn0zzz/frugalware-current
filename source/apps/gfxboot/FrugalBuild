# Last Modified: Wed Jun  9 10:46:14 CEST 2004
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=gfxboot
pkgver=2.2
themever=0.2
pkgrel=1
build=63
build=`wget --passive-ftp -O - -q ftp://ftp.suse.com/pub/suse/i386/current/suse/src/ |grep gfxboot |tail -1|cut -d '>' -f 2|cut -d '<' -f 1|sed 's/.src.rpm//'|cut -d - -f 3`
pkgdesc="Graphical boot logo for lilo and syslinux"
depends=('glibc' 'perl')
makedepends=('alien')
up2date=`wget --passive-ftp -O - -q ftp://ftp.suse.com/pub/suse/i386/current/suse/src/ |grep gfxboot |tail -1|cut -d '>' -f 2|cut -d '<' -f 1|sed 's/.src.rpm//'|cut -d - -f 2`
source=(ftp://ftp.suse.com/pub/suse/i386/current/suse/src/gfxboot-$pkgver-$build.src.rpm frugalware-grub-theme-$themever.tar.gz)
md5sums=('9df5831205d0fb207e08854b90b802cb' 'c583001ebad1aaa59f993406919d770b')

build() {
	cd $startdir/src/
	alien -t gfxboot-$pkgver-$build.src.rpm
	tar xvzf gfxboot-$pkgver.tgz
	tar xvjf gfxboot-$pkgver.tar.bz2
	cd $pkgname-$pkgver

	make || return 1

	cp -a ../themes ./
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
