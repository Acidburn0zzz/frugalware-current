# Last Modified: Mon, 09 May 2005 11:13:26 +0200
# Compiling Time: ~4 minutes
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=cdrtools
pkgver=2.01
pkgrel=1
pkgdesc="Tools for recording CDs"
url="http://www.fokus.gmd.de/research/cc/glone/employees/joerg.schilling/private/cdrecord.html"
depends=('glibc')
groups=('apps')
archs=('i686' 'x86_64')
up2date="wget --passive-ftp -O - -q ftp://ftp.berlios.de/pub/cdrecord/|grep cdrtools-.*.tar.gz|tail -n 1|sed 's/.*-\(.*\)\.tar\.gz$/\1/'"
source=(ftp://ftp.berlios.de/pub/cdrecord/$pkgname-$pkgver.tar.bz2 \
	$pkgname-$pkgver-faster.diff)
md5sums=('d44a81460e97ae02931c31188fe8d3fd' 'd5ab5d6cebea65009263103db0b1c6fe')


build() {
	cd $startdir/src/$pkgname-`echo $pkgver|sed 's/a.*$//'`
	patch -p1 < $startdir/src/$pkgname-$pkgver-faster.diff
	# patch -p1 < $startdir/src/$pkgname-$pkgver-kernel26.diff
	
	make INS_BASE=$startdir/pkg/usr DEFINSUSR=root DEFINSGRP=root|| return 1

	make INS_BASE=$startdir/pkg/usr DEFINSUSR=root DEFINSGRP=root install
}

# vim: ft=sh
