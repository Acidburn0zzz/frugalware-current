pkgname=cdrtools
pkgver=2.01
pkgrel=2
pkgdesc="Tools for recording CDs"
url="http://www.fokus.gmd.de/research/cc/glone/employees/joerg.schilling/private/cdrecord.html"
depends=('glibc')
groups=('apps')
archs=('i686' 'x86_64')
up2date="wget --passive-ftp -O - -q ftp://ftp.berlios.de/pub/cdrecord/|grep cdrtools-.*.tar.gz|tail -n 1|sed 's/.*-\(.*\)\.tar\.gz$/\1/'"
source=(ftp://ftp.berlios.de/pub/cdrecord/$pkgname-$pkgver.tar.bz2)
md5sums=('d44a81460e97ae02931c31188fe8d3fd')

build()
{
	Fcd $pkgname-`echo $pkgver|sed 's/a.*$//'`
	
	make INS_BASE=$Fdestdir/usr DEFINSUSR=root DEFINSGRP=root || return 1

	make INS_BASE=$Fdestdir/usr DEFINSUSR=root DEFINSGRP=root install
}

# vim: ft=sh
