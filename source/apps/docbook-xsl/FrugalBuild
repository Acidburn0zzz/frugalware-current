pkgname=docbook-xsl
pkgver=1.69.1
pkgrel=1
pkgdesc="XML stylesheets for Docbook-xml transformations."
url="http://sourceforge.net/projects/docbook/"
depends=('libxml2' 'libxslt')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep ']DocBook XSL '|sed -n 's/.*].* \([0-9\.]*\) rele.*/\1/; 1 p'"
source=(http://dl.sourceforge.net/sourceforge/docbook/$pkgname-$pkgver.tar.gz)
sha1sums=('9e7da9780abf9f504028f8b0dcb106b6a73bad8e')

build() {
	Fmkdir usr/share/xml/docbook/xsl/
	for fn in VERSION common html xhtml javahelp fo template lib manpages; do
		cp -a $startdir/src/$pkgname-$pkgver/$fn $startdir/pkg/usr/share/xml/docbook/
	done
	Fmkdir etc/xml
}

# optimalization ok - noarch

