pkgname=shfs
pkgver=0.35
pkgrel=2
pkgdesc="A Linux kernel module which allows you to mount remote filesystems using a shell (ssh) connection"
url="http://shfs.sourceforge.net/"
depends=('glibc' 'kernel=2.6.9')
up2date=`lynx -dump http://sourceforge.net/projects/$pkgname|grep -1 Version|sed -n -e "s/.*]$pkgname-\([0-9\.]*\) [A-Z].*/\1/" -e '3 p'`
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('016f49d71bc32eee2b5d11fc1600cfbe')

build() {
	if ! [ -e /usr/src/linux/include/asm ]; then
		echo "Please run make in /usr/scr/linux !"
		exit 1
	fi
	cd $startdir/src/$pkgname-$pkgver
	
	make || return 1
	
	make install ROOT=$startdir/pkg
}

# vim: ft=sh
