# Compiling Time: 0.34 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=swish-e
pkgver=2.4.3
pkgrel=1
pkgdesc="Swish-e is a system for indexing of webpages or other files"
depends=('perl' 'libxml2')
install=swish-e.install
url="http://www.swish-e.org"
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://swish-e.org/download/index.html | grep -m3 tar.gz$ | sed 's/.*e-\(.*\).t.*/\1/g;' | tail -n1"
source=(http://www.swish-e.org/distribution/$pkgname-$pkgver.tar.gz)
sha1sums=('7316ad716eeb724529f2ccf40d2acb03cba26ee2')

build()
{
	Fcd
	./configure $Fconfopts --libexecdir=/usr/lib
	make || return 1
	make DESTDIR=$Fdestdir install

	# Copy the source to /tmp for building the perl module
	Fmkdir tmp
	cp $Fsrcdir/$pkgname-$pkgver.tar.gz $Fdestdir/tmp
}

# optimization OK
