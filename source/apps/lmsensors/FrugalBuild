pkgname=lmsensors
pkgver=2.8.8
pkgrel=4
pkgdesc="Linux System Hardware Monitor"
url="http://secure.netroedge.com/~lm78/"
depends=('glibc')
makedepends=('bison')
backup=(etc/sensors.conf)
up2date=`lynx -dump http://secure.netroedge.com/~lm78/download.html|grep 'lm_sensors-'|head -n 1|cut -d '-' -f 2|cut -d ' ' -f 1`
source=(http://secure.netroedge.com/~lm78/archive/lm_sensors-2.8.8.tar.gz)
md5sums=('95cdb083b4d16e2419a2c78b35f608d0')
install=lmsensors.install

build() {
	cd $startdir/src/lm_sensors-$pkgver
	
	make user || return 1
	
	make DESTDIR=$startdir/pkg PREFIX=/usr user_install
	rm $startdir/pkg/usr/include/linux/i2c-dev.h
}

