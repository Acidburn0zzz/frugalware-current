pkgname=lmsensors
pkgver=2.9.1
pkgrel=3
pkgdesc="Linux System Hardware Monitor"
url="http://secure.netroedge.com/~lm78/"
groups=('apps')
archs=('i686' 'x86_64')
depends=('glibc')
up2date="lynx -dump http://secure.netroedge.com/~lm78/download.html|grep lm_sensors- |sed  -e q |sed -e 's/.*rs-\(.*\)\ .*/\1/'"
source=(http://secure.netroedge.com/~lm78/archive/lm_sensors-$pkgver.tar.gz rc.lmsensors)
md5sums=('f5af615e39441d95471bdb72a3f01709' '2eea5107b8c1f479c3efa0468b055c3f')
backup=('/etc/sensors.conf')
install="lmsensors.install"

build() {
	Fcd lm_sensors-$pkgver
	make user || return 1
	make DESTDIR=$startdir/pkg PREFIX=/usr user_install
	Frm usr/include/linux/
	Frcd lmsensors
}

# optimalization OK

