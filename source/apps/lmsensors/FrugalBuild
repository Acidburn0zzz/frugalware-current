pkgname=lmsensors
pkgver=2.10.0
pkgrel=1
pkgdesc="Linux System Hardware Monitor"
url="http://secure.netroedge.com/~lm78/"
groups=('apps')
archs=('i686' 'x86_64')
depends=('glibc' 'sysfsutils')
makedepends=('kernel-source')
up2date="lynx -dump http://secure.netroedge.com/~lm78/download.html|grep lm_sensors-|sed 's/.*-\([^ ]*\) .*/\1/;q'"
source=(http://secure.netroedge.com/~lm78/archive/lm_sensors-$pkgver.tar.gz rc.lmsensors README.Frugalware)
sha1sums=('bb45194eebfdc92cf233b7cfe24196cbad6ee721' \
	  'f91892076a106c4aaee29f9611b9f004ddb392ab' \
	  '354233f383c999c13513749e8ded1b5939ee83bd')

backup=(etc/{sensors.conf,sysconfig/lm_sensors})

build() {
	Fcd lm_sensors-$pkgver
	make user || return 1
	make DESTDIR=$Fdestdir PREFIX=/usr user_install
	Frm usr/include/linux/
	Frcd lmsensors
	Fdoc README.Frugalware
}

# optimization OK

