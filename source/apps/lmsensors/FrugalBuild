pkgname=lmsensors
pkgver=2.9.1
pkgrel=2
pkgdesc="Linux System Hardware Monitor"
url="http://secure.netroedge.com/~lm78/"
groups=('apps')
archs=('i686')
depends=('glibc')
up2date="lynx -dump http://secure.netroedge.com/~lm78/download.html|grep lm_sensors- |sed  -e q |sed -e 's/.*rs-\(.*\)\ .*/\1/'"
source=(http://secure.netroedge.com/~lm78/archive/lm_sensors-$pkgver.tar.gz)
md5sums=('f5af615e39441d95471bdb72a3f01709')
backup=('sensors.conf');

build() {
	cd $startdir/src/lm_sensors-$pkgver
	make user || return 1
	make DESTDIR=$startdir/pkg PREFIX=/usr user_install
	rm -fr $startdir/pkg/usr/include/linux/
}
