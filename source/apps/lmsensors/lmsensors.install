post_install() {
	echo -ne "\nIf you want to use lmsensors try to run 'sensors-detect' then\n"
	echo -ne "say YES at end of sensors-detect to write /etc/sysconfig/lm_sensors\n"
	echo -ne "for generate lm_sensors. Then do 'service start lmsensors'\n\n"
	/bin/true
}

post_upgrade() {
    post_install $1
}

op=$1
shift

$op $*
