# Last Modified: Sat, 29 Oct 2005 18:06:21 +0200
# Compiling Time: ~1 seconds
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=docbook-xml
pkgver=4.2
pkgrel=3
pkgdesc="A widely used XML scheme for writing documentation and help"
url="http://www.oasis-open.org/docbook/xml/"
depends=('libxml2')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump ${url}index.1.shtml|grep current|sed 's/.*V\([0-9\.]\+\) .*/\1/'"
source=(http://www.oasis-open.org/docbook/xml/$pkgver/$pkgname-$pkgver.zip)
install=$pkgname.install
md5sums=('73fe50dfe74ca631c1602f558ed8961f')

build() {
	cd $startdir/src/
	mkdir -p $startdir/pkg/usr/share/sgml/docbook/catalog
	cp docbook.cat $startdir/pkg/usr/share/sgml/docbook/catalog/
	mkdir -p $startdir/pkg/usr/share/sgml/docbook/dtd/xml-dtd-$pkgver
	cp -r *.dtd $startdir/pkg/usr/share/sgml/docbook/dtd/xml-dtd-$pkgver/
	cp -r *.mod $startdir/pkg/usr/share/sgml/docbook/dtd/xml-dtd-$pkgver/
	cp -R ent $startdir/pkg/usr/share/sgml/docbook/dtd/xml-dtd-$pkgver/
}

# vim: ft=sh
