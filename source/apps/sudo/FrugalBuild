pkgname=sudo
pkgver=1.6.8p1
pkgrel=1
pkgdesc="Give limited root privileges to certain users"
url="http://www.sudo.ws/"
depends=('glibc')
backup=('etc/sudoers')
up2date=`lynx -dump http://www.sudo.ws/|grep 'current v'|sed 's/.* \(.*\)\, r.*/\1/'`
source=(http://www.sudo.ws/dist/$pkgname-$pkgver.tar.gz)
md5sums=('7fa9649f327d2e92eb1a73da537759d5')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
