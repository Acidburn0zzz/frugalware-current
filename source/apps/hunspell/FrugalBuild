pkgname=hunspell
pkgver=1.4.2
pkgrel=1
pkgdesc="An interactive Hungarian spell checker"
rodepends=('hunspell-dict')
depends=('libstdc++>=6.2.1-5' 'readline>=6.3-9' 'ncurses>=6.0-12')
makedepends=('hd2u')
groups=('apps')
archs=("x86_64")
_F_github_author=hunspell
_F_github_tag_v=1
Finclude github
sha1sums=('d2cfdccb7ef58a70df400eeaad1fdf84cd8fbf96')

CXXFLAGS+=" -fPIC"

build() {

	Fbuild --with-ui --with-readline
	Fmv usr/bin/analyze usr/bin/analyze-hunspell
}

# optimization OK
