pkgname=parted
pkgver=1.6.22
pkgrel=2
pkgdesc="A program for creating, destroying, resizing, checking and copying partitions"
url="http://www.gnu.org/software/parted/parted.html"
depends=('e2fsprogs')
groups=('apps')
install=$pkgname.install
up2date=`lynx -dump 'http://ftp.gnu.org/gnu/parted/?M=D'|grep tar.gz$|sed -n -e 's/.*parted-\(.*\)\.tar\.gz$/\1/' -e '1 p'`
source=(http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('a8177c27ce5830bdaa4d6f2d7cd13671')

build()
{
	Fbuild --disable-Werror || return 1
	Frm /usr/info/dir
}

