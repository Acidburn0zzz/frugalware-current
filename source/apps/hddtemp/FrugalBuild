# Last Modified: Sat, 09 Jul 2005 03:41:41 +0200
# Compiling Time: ~1 minute
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=hddtemp
pkgver=0.3_beta13
pkgrealver=0.3-beta13
pkgrel=1
pkgdesc="hddtemp will show you the hard drive's temperature if the hard drive supports it"
url="http://www.guzu.net/linux/hddtemp.php"
groups=('apps')
depends=('glibc')
archs=('x86_64' 'i686')
up2date="lynx -dump http://www.guzu.net/linux/ |grep hddtemp.*.tar |sort -r |sed -ne 's/.*p-\(.*\).t.*/\1/;9 p' |sed s/-/_/"
source=(http://www.guzu.net/linux/$pkgname-$pkgrealver.tar.bz2 hddtemp.db update-hddtempdb)
md5sums=('36d98101daeac1ae8c1589a75aaab00c' 'b87dd5f242155db10c0cc91c99bf626e'\
         '7b835ef37a7b0aa1d150579d2d7f6b0d')

build () {
	Fcd $pkgname-$pkgrealver
	Fbuild
	Fmkdir /usr/share/misc/
	cd $Fsrcdir
	Ffilerel hddtemp.db usr/share/misc/hddtemp.db
	Fexe update-hddtempdb /usr/sbin/update-hddtempdb
}

# optimalization OK

