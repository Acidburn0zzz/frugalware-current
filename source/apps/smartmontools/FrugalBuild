pkgname=smartmontools
pkgver=5.37
pkgrel=1
pkgdesc="For monitoring S.M.A.R.T. disks and devices"
url="http://smartmontools.sourceforge.net/"
depends=('bash')
groups=('apps')
archs=('i686' 'x86_64' 'ppc')
Finclude sourceforge
source=($source rc.smartd)

build()
{
	Fbuild
	Frm /etc/rc.d
	Frcd smartd
}

# optimization OK

sha1sums=('d6e88f576e26836b929c570290644b0580645602' \
	  '1c0830ea58ccdbe5d2d713c92cf1da79066d045e')
