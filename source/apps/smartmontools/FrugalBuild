pkgname=smartmontools
pkgver=5.36
pkgrel=1
pkgdesc="For monitoring S.M.A.R.T. disks and devices"
url="http://smartmontools.sourceforge.net/"
depends=('bash')
groups=('apps')
archs=('i686' 'x86_64' 'ppc')
Finclude sourceforge
source=($source rc.smartd)

build()
{
	Fbuild
	Frm /etc/rc.d
	Frcd smartd
}

# optimization OK
sha1sums=('aafc42287c694e4206d80b7886401acdb0eff230' \
	  '1c0830ea58ccdbe5d2d713c92cf1da79066d045e')
