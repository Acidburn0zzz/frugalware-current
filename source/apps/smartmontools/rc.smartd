. /etc/rc.d/rc.functions

# chkconfig: 345 44 56
# description: smartmontools - for monitoring S.M.A.R.T. disks and devices

if [ "$1" = "stop" ]; then
	stop "$stopsmartd"
	killall smartd
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startsmartd"
	smartd
	ok $?
fi
