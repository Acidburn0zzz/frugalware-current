# Last Modified: Mon, 09 Jan 2006 00:58:46 +0100
# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=alien
pkgver=8.61
pkgrel=1
pkgdesc="Converts between the rpm, dpkg, slp, and slackware tgz file formats."
url="http://kitenet.net/programs/alien/"
depends=('perl')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump http://kitenet.net/programs/alien/|grep Current|tr -s ' '|cut -d ' ' -f 4"
source=(http://kitenet.net/programs/$pkgname/${pkgname}_$pkgver.tar.gz)
sha1sums=('65ef17fe0fa17f1f60dc3ed8f423c95c7c8918e0')

build()
{
	Fcd $pkgname
	Fmake
	Fmakeinstall  VARPREFIX=$Fdestdir PREFIX=$Fdestdir/usr
	Frm /usr/lib/perl5/current
	find $Fdestdir/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK - noarch
