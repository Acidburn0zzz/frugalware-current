# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=alien
pkgver=8.47
pkgrel=1
pkgdesc="converts between the rpm, dpkg, stampede slp, and slackware tgz file formats"
url="http://kitenet.net/programs/alien/"
depends=('perl')
up2date=`lynx -dump http://kitenet.net/programs/alien/|grep Current|tr -s ' '|cut -d ' ' -f 4`
source=(http://kitenet.net/programs/$pkgname/${pkgname}_$pkgver.tar.gz)
md5sums=('c1635ea9ddb7deea6918eb82fe4369c3')

build() {
	cd $startdir/src/$pkgname
	perl Makefile.PL
	
	make
	
	make DESTDIR=$startdir/pkg install
	cd $startdir/pkg/usr/lib/perl5
	mv 5* current
	cd site_perl
	mv 5* current
	rm -rf current/i686-linux
}

# vim: ft=sh
