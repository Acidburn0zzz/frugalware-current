# Last Modified: Mon, 30 May 2005 14:35:34 +0000
# Compiling Time: ~4 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=gnupg
pkgver=1.4.1
pkgrel=1
pkgdesc="GnuPG is a complete and free replacement for PGP"
url="http://www.gnupg.org/"
depends=('zlib' 'bzip2' 'texinfo' 'libusb' 'readline')
groups=('apps')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump $url|grep stable|sed -ne 's/.*]\(.*\) \.$/\1/;1 p'"
source=(ftp://ftp.gnupg.org/GnuPG/gnupg/$pkgname-$pkgver.tar.gz)
md5sums=('1cc77c6943baaa711222e954bbd785e5')

build()
{
	Fbuild --disable-ldap || return 1
	Frm /usr/info/dir
}

# vim: ft=sh
