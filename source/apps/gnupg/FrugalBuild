# Compiling Time: 0.41 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=gnupg
pkgver=1.4.6
pkgrel=2
pkgdesc="GnuPG is a complete and free replacement for PGP"
url="http://www.gnupg.org/"
depends=('zlib' 'bzip2' 'readline')
makedepends=('cvs') # for Fautoreconf
groups=('apps' 'chroot-core')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep stable|sed -ne 's/.*]\(.*\) \.$/\1/;1 p'"
source=(ftp://ftp.gnupg.org/GnuPG/gnupg/$pkgname-$pkgver.tar.gz \
	fix-options.skel-path.patch)
signatures=($source.sig '')
Finclude texinfo

build()
{
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
}

# optimization OK
