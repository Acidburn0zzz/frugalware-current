pkgname=gnupg
pkgver=1.4.2
pkgrel=1
pkgdesc="GnuPG is a complete and free replacement for PGP"
url="http://www.gnupg.org/"
depends=('zlib' 'bzip2' 'texinfo' 'libusb' 'readline')
groups=('apps')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump $url|grep stable|sed -ne 's/.*]\(.*\) \.$/\1/;1 p'"
source=(ftp://ftp.gnupg.org/GnuPG/gnupg/$pkgname-$pkgver.tar.gz)
md5sums=('09825744d59db5ed87713c5a3487cd9d')

build()
{
	Fbuild --disable-ldap
}

# vim: ft=sh

# optimalization OK
