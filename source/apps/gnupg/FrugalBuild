pkgname=gnupg
pkgver=1.2.6
pkgrel=1
pkgdesc="GnuPG is a complete and free replacement for PGP"
url="http://www.gnupg.org/"
depends=('zlib' 'bzip2')
up2date=`lynx -dump $url|grep stable|sed -ne 's/.*]\(.*\)\.$/\1/;1 p'`
source=(ftp://ftp.gnupg.org/GnuPG/gnupg/$pkgname-$pkgver.tar.gz)
md5sums=('56b10a6f444fff2565f4d960a11b2206')

build() {
	cd $startdir/src/$pkgname-$pkgver
	# patch -p1 < $startdir/src/$pkgname-$pkgver.diff
	./configure --prefix=/usr --disable-ldap
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
