# Compiling Time: ~3 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=mc
pkgver=4.6.0
pkgrel=2
pkgdesc="The Midnight Commander file manager is a Norton Commander clone"
url="http://www.ibiblio.org/pub/Linux/utils/file/managers/mc"
depends=('e2fsprogs' 'glib2')
up2date=`lynx -dump http://www.ibiblio.org/pub/Linux/utils/file/managers/mc/|grep LATEST|sed -n -e 's/.*LATEST-IS-\(.*\) *.*$/\1/' -e '2 p'`
source=(http://www.ibiblio.org/pub/Linux/utils/file/managers/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-fpm.diff)
md5sums=('70804dc9e2049e24f294ff7090a82a12' '0b003834f595693bd1e471bd21e99f5b')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/$pkgname-$pkgver-fpm.diff
	./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
		    --enable-charset --without-gpm-mouse --with-ext2undel \
		    --with-x=no --with-vfs
	make || return 1
	make DESTDIR=$startdir/pkg install
}

