pkgname=mc
pkgver=4.6.1
realver=4.6.1
pkgrel=1
pkgdesc="The GNU Midnight Commander is a CLI-based file manager"
url="http://www.ibiblio.org/pub/Linux/utils/file/managers/mc"
depends=('glib2' 'e2fsprogs' 'slang')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump '$url/'|grep mc-[0-9.\] | tail -n 1 |sed -n 's/.*-\(.*-.*\).t.*/\1/;s/-/_/;1 p'"
source=($url/$pkgname-$realver.tar.gz \
	00-$pkgname-4.6.1-fpm.patch \
	01-mc-4.6.1-uglydir.patch.gz \
	02-mc-4.6.1-sambaconfpath.patch \
	03-$pkgname-4.6.1-xterm-title.patch \
	04-mc-4.6.1-promptfix.patch.gz)
md5sums=('18b20db6e40480a53bac2870c56fc3c4' '8e497d9f6c6696c4bd46f583ef0705e9'\
         'b630c51c8a9b12de7bd851745a6f03c0' 'eb67c5639b1d0d0b0b4e7ff25a948667'\
         'f449a1d570726272c7e130ccc9b8421b' '4b213ae2675d3f90cf1aa237598e692b')

build() {
	Fcd $pkgname-$realver
	Fbuild --enable-charset --without-gpm-mouse --with-x=no \
		--with-mcfs --with-samba
}

# vim: ft=sh

# optimalization OK
