# Last Modified: Thu, 28 Jul 2005 19:40:03 +0200
# Compiling Time: ~5 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=aspell
pkgver=0.60.3
pkgrel=3
pkgdesc="A spell checker designed to eventually replace Ispell"
url="http://aspell.net/"
depends=('gcc' 'libstdc++' 'ncurses')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump http://aspell.net/|grep Latest|tr -s ' '|cut -d ' ' -f 7"
source=(ftp://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz aspell.conf)
md5sums=('ca44ac2fcfdc7213e03d3b5610ce141a' '2dd11c5f959b31f000ebf199bbc0b7c5')
backup=('/etc/aspell/aspell.conf')

build() {
	Fbuild --sysconfdir=/etc/aspell --enable-docdir=/usr/share/doc/$pkgname-$pkgver
	Fmkdir /etc/aspell
	Fmv ../src/aspell.conf /etc/aspell/aspell.conf
}

# optimalization ok

