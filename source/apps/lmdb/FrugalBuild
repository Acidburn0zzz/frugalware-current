# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=lmdb
pkgver=0.9.19
pkgrel=1
pkgdesc="Symas Lightning Memory-Mapped Database"
url="http://symas.com/mdb"
depends=('glibc>=2.24-4')
groups=('apps')
archs=("x86_64")
_F_github_tag=y
_F_github_ver="LMDB_$pkgver"
Finclude github
up2date="$up2date | sed 's/LMDB_//'"
sha1sums=('5f236169298e277241467b0058b1b36a60d087d6')
_F_cd_path="$pkgname-${_F_github_ver}//libraries/liblmdb"

build() {
	Fcd
	Fsed '/usr/local' '/usr' Makefile
	Fsed "-O2" "$CFLAGS"  Makefile
	Fbuild
}


# optimization OK
