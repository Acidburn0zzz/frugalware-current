# Compiling time: 0.01 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname=bash-completion
pkgver=2.5
pkgrel=1
pkgdesc="Programmable completion for bash"
depends=('bash')
groups=('apps')
archs=("x86_64")
_F_github_author="scop"
_F_github_tag="yes"
Finclude github
sha1sums=('3c65cbdaaa4d31797df0a87401eac6dab740a7bb')
Fconfopts=" --prefix=/usr --sysconfdir=/etc"

build() {

	Fcd
	Fsed '$(datadir)/pkgconfig' "/usr/lib/pkgconfig" Makefile*
	Fsed 'xz\|lzma' 'xz\|lzma\|fpm\|fdb' completions/xz
	Fautoreconf
	_F_make_opt="-j1"
	Fbuild

	## util-linux
	Frm usr/share/bash-completion/completions/{mount,umount}
}
