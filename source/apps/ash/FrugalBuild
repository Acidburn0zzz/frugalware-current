# Last Modified: Fri, 26 Aug 2005 15:54:54 +0200
# Compiling Time: ~0.06 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=ash
pkgver=0.4.0
pkgrel=3
pkgdesc="A lightweight (92K) Bourne compatible shell"
url="http://cvsweb.netbsd.org/bsdweb.cgi/src/bin/sh/"
depends=('sed')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump http://slackware.at/data/slackware-current/source/ap/ash/|grep ash-[0-9\.]*tar\.gz$|sed -n -e 's/.*h-\(.*\)\.tar\.gz$/\1/' -e '1 p'"
source=(ftp://ftp.slackware.com/pub/slackware/slackware-current/source/ap/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver.diff $pkgname-$pkgver-gcc4.diff)
install=$pkgname.install
sha1sums=('9a1695c84734a82b4682237385f7cd6f39a7bd51' \
          '66c9637ab925043279e7e270b13b353ff8350b8b' \
          'b6de42cd42dae5a1fbf1d036a3e97d22c845c5fa')

build() {
	Fpatchall || return 1
  
	Fmake || return 1

	Fexerel sh /bin/ash
	Ffilerel sh.1 /usr/man/man1/ash.1
}

# vim: ft=sh

# optimization OK
