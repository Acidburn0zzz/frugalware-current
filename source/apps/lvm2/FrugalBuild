# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=lvm2
pkgver=2.01.15
pkgrel=2
pkgdesc="Logical Volume Manager 2 utilities"
url="http://sources.redhat.com/lvm2/"
depends=('device-mapper>=1.01.01')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump ftp://sources.redhat.com/pub/lvm2/|grep tgz$|sed -n 's/.*LVM2.\(.*\).tgz/\1/;$ p'"
source=(ftp://sources.redhat.com/pub/lvm2/LVM2.$pkgver.tgz rc.lvm)
sha1sums=('115d2ad69d2b0c280578774442c4f669bfb6cf1e' \
	  'b1fbfb26576003127510e6707e5f95b8a6dbf3fb')

build()
{
	Fcd LVM2.$pkgver
	Fmake
	make DESTDIR=$Fdestdir sbindir="$Fdestdir/sbin" \
		confdir="$Fdestdir/etc/lvm" install
	Frcd lvm
}

# optimalization ok

