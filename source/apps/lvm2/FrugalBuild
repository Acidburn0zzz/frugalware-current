# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=lvm2
pkgver=2.01.12
pkgrel=1
pkgdesc="Logical Volume Manager 2 utilities"
url="http://sources.redhat.com/lvm2/"
depends=('device-mapper>=1.01.01')
groups=('apps')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump ftp://sources.redhat.com/pub/lvm2/|grep tgz$|sed -n 's/.*LVM2.\(.*\).tgz/\1/;$ p'"
source=(ftp://sources.redhat.com/pub/lvm2/LVM2.$pkgver.tgz rc.lvm)
# lynx -dump ftp://sources.redhat.com/pub/lvm2/md5.sum|grep $pkgver.tgz$|sed 's/^\([^ ]*\) .*/\1/'
md5sums=('884f66ad7d83df562db94fc02989c1fb' '306c99156483398b4f4cb7bf05f8e524')

build()
{
	Fcd LVM2.$pkgver
	Fmake || return 1
	make DESTDIR=$Fdestdir install
	Frcd lvm
}

# optimalization ok

