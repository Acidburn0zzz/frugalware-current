pkgname=lvm2
pkgver=2.00.25
pkgrel=1
pkgdesc="Logical Volume Manager 2 utilities"
url="http://sources.redhat.com/lvm2/"
depends=('device-mapper')
install=$pkgname.install
up2date=`wget --passive-ftp -O - -q ftp://sources.redhat.com/pub/lvm2/|grep LVM2.0-stable|cut -d '>' -f 4|sed -e 's/ LVM2\.//' -e 's/\.tgz//'`
source=(ftp://sources.redhat.com/pub/lvm2/LVM2.$pkgver.tgz)
md5sums=('287ed36505eca25ceda7c48c3dfed42c')

build() {
	cd $startdir/src/LVM2.$pkgver
	./configure --prefix=/ --mandir=/usr/man
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
	mkdir -p $startdir/pkg/etc/rc.d/rc.messages
	install -m755 $startdir/rc.lvm $startdir/pkg/etc/rc.d/rc.lvm
	install -m644 $startdir/messages/lvm.* \
		$startdir/pkg/etc/rc.d/rc.messages
}

# vim: ft=sh
