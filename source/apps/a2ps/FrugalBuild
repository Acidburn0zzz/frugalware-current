pkgname=a2ps
pkgver=4.13
pkgrel=3
pkgdesc="An Any to PostScript filter"
url="http://www.inf.enst.fr/~demaille/a2ps"
depends=('glibc' 'urw-fonts' 'psutils')
makedepends=('emacs')
groups=('apps')
backup=('etc/a2ps-site.cfg' 'etc/a2ps.cfg')
install=$pkgname.install
up2date="lynx -dump $url | grep 'Current Version' | cut -d ' ' -f 4"
source=(ftp://ftp.enst.fr/pub/unix/$pkgname/$pkgname-$pkgver.tar.gz glibc-2.3.4.patch0)
md5sums=('c4361045913b27dbb6b6315874f6b196' 'ab357935904242d68d3982c96816dabf')

build()
{
	Fbuild --sysconfdir=/etc || return 1
}


