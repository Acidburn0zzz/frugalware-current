pkgname=p11-kit
pkgver=0.23.2
pkgrel=8
pkgdesc="Provides a way to load and enumerate PKCS#11 modules."
url="http://p11-glue.freedesktop.org/p11-kit.html"
depends=('libtasn1>=4.12' 'ca-certificates' 'libffi>=3.2.1-2')
groups=('apps' 'chroot-core')
archs=("x86_64")
up2date="Flasttar http://p11-glue.freedesktop.org/releases/"
source=(http://p11-glue.freedesktop.org/releases/$pkgname-$pkgver.tar.gz)
signatures=("${source[0]}.sig")
Fconfopts+=" --enable-static=no --disable-static --with-trust-paths=/etc/ssl/certs/ca-certificates.crt"
_F_cross32_subdepends=('lib32-libtasn1' 'lib32-libffi')
_F_cross32_simple="yes"
_F_cross32_delete=('usr/share')
Finclude cross32

# optimization OK
