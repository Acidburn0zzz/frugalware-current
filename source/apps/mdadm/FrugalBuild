# Last Modified: Mon, 11 Apr 2005 12:39:01 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=mdadm
pkgver=1.11.0
pkgrel=1
pkgdesc="A tool for managing software RAID under Linux"
url="http://www.kernel.org/pub/linux/utils/raid/mdadm/"
depends=('glibc')
groups=('apps')
archs=('i686')
backup=('etc/mdadm.conf')
up2date="lynx -dump 'http://www.kernel.org/pub/linux/utils/raid/mdadm/?C=M;O=D'|grep mdadm-[0-9\.]*tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.bz2)
md5sums=('0795fe26ef40313baccf3cf36e366a67')

build()
{
	Fsed 'CFLAGS = \(.*\)' "CFLAGS = $CFLAGS \1" $pkgname-$pkgver/Makefile
	Fbuild || return 1
}

# optimalization ok

