pkgname=gsettings-desktop-schemas
pkgver=3.22.0
pkgrel=1
pkgdesc="Shared GSettings schemas for the desktop"
depends=('glib2>=2.50.0')
makedepends=('intltool>=0.51.0-4' 'gobject-introspection>=1.50.0')
groups=('apps')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
_F_gnome_ext=".tar.xz"
_F_gnome_devel="y"
_F_gnome_doc="n"
Finclude gnome gnome-scriptlet
#gnome-screen-saver will merge into gnome-session gnome-shell
#source=($source background.diff theme.diff gsettings.diff)
source=($source button.patch)
sha1sums=('924bd3fe84eaf6658e6b37d52554e55e2a1c86d1' \
          '591d18fac21660e78f463fd8fd21ab7163c7b56c')
Fconfopts="$Fconfopts --disable-schemas-compile --enable-introspection=yes"

build(){
	Fcd
	Fsed '$(datadir)/pkgconfig' '$(libdir)/pkgconfig' Makefile.{am,in}
	Fbuild
	Fbuild_gnome_scriptlet
}

# optimization OK
