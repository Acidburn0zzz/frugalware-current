# Compiling Time: 1.04 SBU
# Maintainer: DeX77 <dex77@frugalware.org>
# Contributor: Miklos Vajna <vmiklos@frugalware.org>

pkgname=gnutls
pkgver=3.4.7
pkgrel=3
pkgdesc="A library which provides a secure layer over a reliable transport layer"
url="http://www.gnu.org/software/gnutls/"
groups=('apps' 'chroot-core')
archs=('i686' 'x86_64' 'arm')
depends=('libtasn1>=4.7-4' 'nettle>=3.1.1-5' 'p11-kit>=0.23.2-3' 'libstdc++>=5.3.0-2' \
	'libffi>=3.2.1')
options=('scriptlet')
up2date="Flasttar ftp://ftp.gnutls.org/gcrypt/gnutls/v3.4/"
source=(ftp://ftp.gnutls.org/gcrypt/$pkgname/v${pkgver%.*}/$pkgname-$pkgver.tar.xz)
signatures=("${source[0]}.sig")
Finclude texinfo

build()
{
	Fcd $pkgname-$pkgver
	Fpatchall
	Fmake
	make check || Fdie
	Fmakeinstall
}

# optimization OK
