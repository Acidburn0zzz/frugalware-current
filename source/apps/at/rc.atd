# chkconfig: 2345 50 60
# description: Allows you to run jobs at specified times.

source /lib/initscripts/functions
TEXTDOMAIN=atd

actions=(restart start status stop)
daemon=$"at daemon"

pid="pidof atd 2> /dev/null"

rc_start()
{
	start_msg
	if [[ "$(eval ${pid})" == "" ]] ; then
		atd
		ok $?
	else
		ok 999
	fi
}

rc_stop()
{
	stop_msg
	if [[ "$(eval ${pid})" != "" ]] ; then
		killall atd
		ok $?
	else
		ok 999
	fi
}

rc_exec $1

