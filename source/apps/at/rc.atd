. /etc/rc.d/rc.functions

# chkconfig: 2345 50 60
# description: Allows you to run jobs at specified times.

if [ "$1" = "stop" ]; then
	stop "$stopatd"
	killall atd
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startatd"
	atd
	ok $?
fi
