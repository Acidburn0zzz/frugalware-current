# Last Modified: Mon, 09 May 2005 11:14:34 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=at
pkgver=3.1.8r11
pkgrel=2
pkgdesc="Allows you to run jobs at specified times"
url="http://ftp.debian.org/debian/pool/main/a/at/"
depends=('glibc')
groups=('apps')
backup=(etc/at.deny)
install=$pkgname.install
up2date=`lynx -dump 'http://ftp.debian.org/debian/pool/main/a/at/?M=D'|grep "at.*tar.gz "|sed -e 's/.*at_\(.*\)\.tar\.gz.*/\1/' -e 's/-/r/'`
source=(http://ftp.debian.org/debian/pool/main/a/at/${pkgname}_`echo $pkgver|sed 's/r/-/'`.tar.gz \
	rc.atd)
md5sums=('81dbae5162aaa8a398a81424d6631c77' '2f128951acb524c906107057f6593431')

build() {
	cd $startdir/src/$pkgname-`echo $pkgver|sed 's/r.*//'`
	./configure --prefix=/usr

	make || return 1

	make prefix=$startdir/pkg/usr install
	mkdir -p $startdir/pkg/var/spool/{atjobs,spool}
	chmod 700 $startdir/pkg/var/spool/{atjobs,spool}
	chown daemon.daemon $startdir/pkg/var/spool/{atjobs,spool}
	mkdir -p $startdir/pkg/etc/rc.d/rc.messages
	install -m755 $startdir/rc.atd $startdir/pkg/etc/rc.d/rc.atd
	install -m644 $startdir/messages/atd.* \
		$startdir/pkg/etc/rc.d/rc.messages/
	touch $startdir/pkg/etc/at.deny
}
