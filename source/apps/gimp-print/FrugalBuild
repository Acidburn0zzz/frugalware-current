# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=gimp-print
pkgver=4.2.6
pkgrel=2
pkgdesc="IJS printer driver for Ghostscript and CUPS"
url="http://gimp-print.sourceforge.net/"
depends=('cups' 'readline')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://gimp-print.sourceforge.net/'|grep 'stable.*release'|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 3"
source=(http://dl.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('664a77618a51a1d03e6277431bf1f2765b9a1528')

build() {
	Fbuild --infodir=/usr/info --with-cups --without-gimp \
	       --enable-escputil --disable-static --without-translated-ppds
}

# optimalization OK

