pkgname=groff
pkgver=1.19.1
pkgrel=3
pkgdesc="GNU troff text-formatting system"
url="http://www.gnu.org/software/groff/groff.html"
depends=('perl' 'gcc-lib' 'libstdc++')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.gnu.org/software/groff/groff.html|grep -i 'news v'|sed -n -e 's/.* \(.*$\)/\1/' -e '1 p'"
source=(ftp://ftp.gnu.org/gnu/groff/groff-$pkgver.tar.gz)
sha1sums=('82ba1b29b01c36bf41149ce8813cea712e3e6cbf')

build()
{
	Fmkdir /usr
	Fbuild
	Fln eqn /usr/bin/geqn
	Fln tbl /usr/bin/gtbl
	Fln soelim /usr/bin/zsoelim
	Frm /usr/lib
}

