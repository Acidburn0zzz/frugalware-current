# Compiling Time: 1.13 SBU
# Contributor: VMiklos <vmiklos@frugalware.org>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=espgs
pkgver=8.15.2
pkgrel=1
pkgdesc="A customized version of GNU Ghostscript"
url="http://www.cups.org/espgs/"
depends=('glib' 'cups' 'libstdc++')
rodepends=('foomatic-filters' 'urw-fonts')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep Stable |sed -e 's/.*v//'"
source=(ftp://ftp.rz.tu-bs.de/pub/mirror/ftp.easysw.com/ftp/pub/ghostscript/$pkgver/$pkgname-$pkgver-source.tar.bz2)
sha1sums=('9a66e94ac8f98203616dcf01c09bea4e5c173587')

build() {
	unset MAKEFLAGS
	Fmake --enable-cups \
		--enable-dynamic \
		--enable-threads \
		--with-drivers=ALL \
		--with-omni \
		--with-ijs \
		--with-x=no \
		--datadir=/usr/share \
		--with-fontpath=/usr/share/ghostscript
	Fmakeinstall install_prefix=$Fdestdir datadir=$Fdestdir/usr/share
}

# optimization OK
