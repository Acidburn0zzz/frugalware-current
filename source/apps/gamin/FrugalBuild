pkgname=gamin
pkgver=0.1.3
pkgrel=1
pkgdesc="Library providing the FAM File Alteration Monitor API"
url="http://www.gnome.org/~veillard/gamin/"
depends=('glib2')
makedepends=('python' 'doxygen')
conflicts=('fam')
replaces=('fam')
provides=('fam')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.gnome.org/~veillard/gamin/sources/?C=M;O=D'|grep tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.gnome.org/~veillard/gamin/sources/$pkgname-$pkgver.tar.gz)
sha1sums=('aee2b6c0e212b86a507bb29b9440da60f55e1215')

build() {
	Fbuild --enable-doxygen
	Ffile $pkgname-$pkgver/doc/*.html usr/share/doc/$pkgname-$pkgver
}

