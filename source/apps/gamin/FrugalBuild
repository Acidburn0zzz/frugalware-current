# Last modified: Thu, 17 Mar 2005 11:47:06 +0100
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gamin
pkgver=0.0.26
pkgrel=1
pkgdesc="Library providing the FAM File Alteration Monitor API"
url="http://www.gnome.org/~veillard/gamin/"
depends=('glib2' 'python')
makedepends=('gtk-doc')
conflicts=('fam')
replaces=('fam')
provides=('fam')
groups=('apps')
archs=('i686')
up2date="lynx -dump 'http://www.gnome.org/~veillard/gamin/sources/?C=M;O=D'|grep tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.gnome.org/~veillard/gamin/sources/$pkgname-$pkgver.tar.gz)
md5sums=('3d716b6533466f9ca69df13c58009981')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
