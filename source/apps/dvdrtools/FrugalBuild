# Compiling Time: ~5 minutes
# Maintainer: zleho <zleho@index.hu>

pkgname=dvdrtools
pkgver=0.2.1
pkgrel=2
pkgdesc="A fork of cdrtools, with the primary goal of supporting writable DVD drives"
url="http://www.nongnu.org/dvdrtools/"
depends=('glibc')
groups=('apps')
up2date=`lynx -dump http://www.nongnu.org/dvdrtools/|grep current|sed 's/.*(\(.*\)).*/\1/'`
source=(http://savannah.nongnu.org/download/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('c279e10a821f58d9de37275f8b88deff')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	# would conflict with cdrtools
	# make prefix=$startdir/pkg/usr install
	install -D cdrecord/dvdrecord $startdir/pkg/usr/bin/dvdrecord
	install cdda2wav/cdda2{mp3,ogg} $startdir/pkg/usr/bin/
	install -D -m644 cdrecord/dvdrecord.1 $startdir/pkg/usr/man/man1/dvdrecord.1
}
