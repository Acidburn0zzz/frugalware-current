post_install()
{
	echo -n "generating the top-level Info node... "
	mkinfodir /usr/info > /usr/info/dir 2>/dev/null
	echo "done."
}

post_upgrade()
{
	post_install
}

pre_remove()
{
	echo -n "removing the top-level Info node... "
	rm -f /usr/info/dir
	echo "done."
}

op=$1
shift

$op $*

