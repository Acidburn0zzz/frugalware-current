# Compiling time: 0.17 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=texinfo
pkgver=4.8a
pkgrel=1
pkgdesc="The GNU info program and utilities"
url="http://www.gnu.org/software/texinfo/"
depends=('ncurses' 'net-tools' 'grep' 'sed' 'udev')
makedepends=('bison')
groups=('apps' 'chroot-core')
archs=('i686' 'x86_64')
options=('force')
_F_cd_path="$pkgname-4.8"
up2date="lynx -dump 'http://ftp.gnu.org/gnu/texinfo/?M=D'|grep tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.bz2 mkinfodir)
sha1sums=('cde723b115faebb81019154c320e108c5042c906' \
          'd744345f082e32af0675a0b9d3287c6b8d4600a7')

build()
{
	Fbuild
	Fexe /usr/bin/mkinfodir
}

# optimization ok
