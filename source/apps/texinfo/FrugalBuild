pkgname=texinfo
pkgver=4.8
pkgrel=6
pkgdesc="The GNU info program and utilities"
url="http://www.gnu.org/software/texinfo/"
depends=('ncurses' 'net-tools' 'grep' 'sed')
makedepends=('bison')
groups=('apps' 'chroot-core')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://ftp.gnu.org/gnu/texinfo/?M=D'|grep tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.bz2 mkinfodir)
sha1sums=('b19e906f7220294c1e8b087d583c50f5c4d7c420' \
	  'd744345f082e32af0675a0b9d3287c6b8d4600a7')

build()
{
	Fbuild
	Fexe /usr/bin/mkinfodir
}

# optimization ok
