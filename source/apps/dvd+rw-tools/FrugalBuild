pkgname=dvd+rw-tools
pkgver=6.1
pkgrel=1
pkgdesc="A collection of tools to master DVD+RW/+R/-R/-RW media"
url="http://fy.chalmers.se/~appro/linux/DVD+RW/"
depends=('libstdc++')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/tools/|grep '.tar.gz'|sort -n -r|grep -m1 '.tar.gz'|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://fy.chalmers.se/~appro/linux/DVD+RW/tools/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-install.diff)
sha1sums=('ff63b6c6ee33cd777164d5ad72ab5c1c12430916' \
	  'e30aa37c37b479c59665bc5e086f9eba1cd8a3ae')

# optimization OK
