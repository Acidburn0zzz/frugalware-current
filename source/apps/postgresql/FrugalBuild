# Last Modified: Mon, 30 May 2005 17:16:10 +0000
# Compiling Time: ~12 minutes
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=postgresql
pkgver=8.0.3
pkgrel=1
pkgdesc="An advanced Object-Relational database management system (DBMS)"
url="http://www.postgresql.org/"
depends=('openssl' 'zlib' 'readline')
groups=('apps')
archs=('i686' 'x86_64')
up2date="wget --passive-ftp -O - -q ftp://ftp.postgresql.org/pub/source/|grep '\.[0-9]/</a> $'|sed -n 's|.*v\([0-9\.]*\)/</a> $|\1|;$ p'"
source=(ftp://ftp.postgresql.org/pub/source/v$pkgver/postgresql-$pkgver.tar.bz2 rc.postgresql)
# lynx -dump ftp://ftp.postgresql.org/pub/source/v$pkgver/postgresql-$pkgver.tar.bz2.md5 |sed 's/.* = \(.*\)/\1/'
md5sums=('c0914a133ce6c1e0f1d8b93982d6e881' '397dd1f51468c2882620a0b93dc42206')

build()
{
	Fmake --sysconfdir=/etc --datadir=/usr/share/pgsql \
		--localstatedir=/var/lib/pgsql --with-openssl
	make DESTDIR=$Fdestdir install
	Frcd
	Fmkdir /usr/share/doc/
	Fmv /usr/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
}

# optimalization ok

