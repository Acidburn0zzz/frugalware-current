pkgname=zsh
pkgver=4.2.1
pkgrel=1
pkgdesc="Zsh is a shell designed for interactive use"
url="http://www.zsh.org/"
depends=('glibc')
up2date=`lynx -dump ${url}pub/|grep zsh-[0-9\.]*tar.bz2$|sed -n -e 's/.*h-\(.*\)\.t.*/\1/' -e '1 p'`
source=(http://www.zsh.org/pub/$pkgname-$pkgver.tar.bz2 \
	http://www.zsh.org/pub/$pkgname-$pkgver-doc.tar.bz2)
install=$pkgname.install
md5sums=('b59ef34b8de288d5fd16f842451125c8' '943bdc398c6138bdb2294a355f4d0959')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1
	
	make install DESTDIR=$startdir/pkg
	mkdir -p $startdir/pkg/etc
	cd $startdir/pkg/etc && ln -sf profile zprofile
}

# vim: ft=sh
