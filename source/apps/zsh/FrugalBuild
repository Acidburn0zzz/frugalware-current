# Last Modified: Wed, 17 Aug 2005 22:50:10 +0200
# Compiling Time: ~5 minutes
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=zsh
pkgver=4.2.5
pkgrel=3
pkgdesc="Zsh is a shell designed for interactive use"
url="http://www.zsh.org/"
depends=('termcap' 'ncurses')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/pub/|grep zsh-[0-9\.]*tar.bz2$|sed -n -e 's/.*h-\(.*\)\.t.*/\1/' -e '1 p'"
source=(http://www.zsh.org/pub/$pkgname-$pkgver.tar.bz2 \
	http://www.zsh.org/pub/$pkgname-$pkgver-doc.tar.bz2)
sha1sums=('4dc142eb37c4dadae29ed7fb51756ed89ba64263' \
	  'c73aac5b4cd5b9f1be6a4fb903e0d43efc6b36bf')

build()
{
	Fbuild
	Fmkdir /etc /bin
	Fln profile /etc/zprofile
	Fmv /usr/bin/zsh /bin/
}

# optimalization ok

# vim: ft=sh
