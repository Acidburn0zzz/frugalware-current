# Last Modified: Tue, 30 May 2006 18:08:57 +0200
# Compiling Time: 0.15 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=ocrad
pkgver=0.15
pkgrel=1
pkgdesc="GNU Ocrad is an OCR (Optical Character Recognition) program."
url="http://www.gnu.org/software/ocrad/ocrad.html"
depends=('libstdc++')
groups=('apps')
archs=('i686')
up2date="lynx -dump http://ftp.gnu.org/gnu/ocrad/?M=A|sort -n -r|grep -m1 '.tar.bz2$'|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://ftp.gnu.org/gnu/ocrad/$pkgname-$pkgver.tar.bz2)
sha1sums=('f5b62d21b1efc863d46e42221cf0a6a48e078801')

build()
{
	Fcd
	[ "$CARCH" == "x86_64" ] && export CXXFLAGS="$CXXFLAGS -fPIC"
	Fsed "-O2" "${CXXFLAGS}" Makefile.in
	Fbuild
}

# optimization OK
