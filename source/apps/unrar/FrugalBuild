# Last Modified: Fri, 27 May 2005 22:20:33 +0200
# Compiling Time: ~21 seconds
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=unrar
pkgver=3.5.2
pkgrel=1
pkgdesc="Uncompress rar files"
url="http://www.rarlab.com/"
depends=('gcc')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://files3.rarlab.com/rar/?C=M;O=D'|grep unrarsrc-[0-9\.]*.tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://files3.rarlab.com/rar/unrarsrc-$pkgver.tar.gz unrar-3.5.2-optimalization-fix.patch)
md5sums=('bd2bf020e3b33cb6872856c62cd6f580' '30a0d1ef33fdc5f4dfffb458a9695630')

build() {
	cd $startdir/src/$pkgname
	Fpatchall || return 1

	make -f makefile.unix || return 1

	install -D -m755 -o root -g root $startdir/src/$pkgname/unrar \
	$startdir/pkg/usr/bin/unrar
}

# optimalization ok

# vim: ft=sh

