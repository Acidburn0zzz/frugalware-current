# Contributor: CSÉCSY László <boobaa@ajrg.hu>

pkgname=unrar
pkgver=3.5.4
pkgrel=1
pkgdesc="Uncompress rar files"
url="http://www.rarlab.com/"
depends=('libstdc++')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://files3.rarlab.com/rar/?C=M;O=D' | grep unrarsrc-[0-9\.]*.tar.gz | sed -n 's/.*-\([0-9\.]\+\).t.*/\1/;1 p'"
source=(http://files3.rarlab.com/rar/unrarsrc-$pkgver.tar.gz \
	$pkgname-3.5.2-optimalization-fix.patch)
sha1sums=('e0bf07f8a36b738b1ed033b767155f27b51fc408' \
          '265050fcbedceafba4ad8aff1cfc4390954e4203')

build()
{
	Fcd $pkgname
	Fpatchall

	make -f makefile.unix || return 1

	Fexerel /usr/bin/unrar
}

# optimalization ok

