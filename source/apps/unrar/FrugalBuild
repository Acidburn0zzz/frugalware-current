# Last Modified: Wed, 03 Aug 2005 00:37:37 +0200
# Compiling Time: 0.07 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=unrar
pkgver=3.5.2
pkgrel=1
pkgdesc="Uncompress rar files"
url="http://www.rarlab.com/"
depends=('libstdc++')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://files3.rarlab.com/rar/?C=M;O=D'|grep unrarsrc-[0-9\.]*.tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://files3.rarlab.com/rar/unrarsrc-$pkgver.tar.gz \
	$pkgname-$pkgver-optimalization-fix.patch)
sha1sums=('f29afc7c8518eafcfc46a82cfb57d2e740146daf' \
          '265050fcbedceafba4ad8aff1cfc4390954e4203')

build()
{
	Fcd $pkgname
	Fpatchall

	make -f makefile.unix || return 1

	Fexerel /usr/bin/unrar
}

# optimalization ok

# vim: ft=sh
