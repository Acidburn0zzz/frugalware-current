pkgname=unrar
pkgver=3.6.6
pkgrel=1
pkgdesc="Uncompress rar files"
url="http://www.rarlab.com/"
depends=('libstdc++')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/rar_add.htm |grep unrarsrc |sed 's/.*c-\(.*\).t.*/\1/'"
source=(http://www.rarlab.com/rar/unrarsrc-$pkgver.tar.gz \
	$pkgname-3.5.2-optimalization-fix.patch)
sha1sums=('89d149f90029789617d5939e0013dfd14ff019db' \
          '265050fcbedceafba4ad8aff1cfc4390954e4203')

build()
{
	Fcd $pkgname
	Fpatchall
	make -f makefile.unix || Fdie
	Fexerel /usr/bin/unrar
}

# optimization OK
