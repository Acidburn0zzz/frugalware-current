# Compiling Time: 0.15 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=nano
pkgver=2.0.6
pkgrel=1
pkgdesc="free Pico clone with some new features."
url="http://www.nano-editor.org/"
depends=('ncurses>=5.6-2')
makedepends=('cvs')
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.nano-editor.org/dist/v2.0/|Flasttar"
source=($url/dist/v2.0/$pkgname-$pkgver.tar.gz frugalware.patch)
backup=('etc/nanorc')
sha1sums=('00102580404cdb1c8594e5f6193000d5acac2249'\
          'cbfc4310437b856272b76e37fdd9d6d7f5fc1712')
build()
{
        Fcd
        Fpatchall
        Fautoreconf
	Fmake \
		--sysconfdir=/etc \
		--enable-color \
		--enable-nanorc \
		--with-gnu-ld \
		--enable-multibuffer \
		--enable-utf8 
	Fmakeinstall
        Ffilerel doc/nanorc.sample /etc/nanorc
	Fdocrel doc/nanorc.sample
}

# optimization OK
