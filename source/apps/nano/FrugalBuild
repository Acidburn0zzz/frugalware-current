# Last Modified: Sat, 04 Mar 2006 22:59:11 +0100
# Compiling Time: 0.08 SBU
# Maintainer: xbit <xbit.lists@chello.hu>

pkgname=nano
pkgver=1.2.5
pkgrel=2
pkgdesc="free Pico clone with some new features"
url="http://www.nano-editor.org/"
depends=('ncurses')
groups=('apps')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump $url|grep 'Latest Version'|tr -s ' '|cut -d ' ' -f 4"
source=($url/dist/v1.2/$pkgname-$pkgver.tar.gz README.Frugalware)
sha1sums=('ba55942aacf9f296a910d8f73afb7446f118830d' \
          '4de77bd9a5e6faa1a9fd00b6f7ba05d4eebc4f6d')
backup=(etc/nanorc)

build()
{
	Fbuild --sysconfdir=/etc --enable-color --enable-nanorc || return 1
	Ffilerel nanorc.sample /etc/nanorc
	Fdocrel nanorc.sample
	Fdoc README.Frugalware
}

# optimization ok
