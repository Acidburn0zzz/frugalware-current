# Compiling Time: ~1 minute
# Maintainer: xbit <xbit.lists@chello.hu>

pkgname=nano
pkgver=1.2.4
pkgrel=1
pkgdesc="free Pico clone with some new features"
url="http://www.nano-editor.org/"
depends=('glibc' 'ncurses')
groups=('apps')
up2date=`lynx -dump http://www.nano-editor.org/|grep 'Latest Version'|tr -s ' '|cut -d ' ' -f 4`
source=(http://www.nano-editor.org/dist/v1.2/nano-1.2.4.tar.gz)
md5sums=('2c513310ec5e8b63abaecaf48670ac7a')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc
	make || return 1
	make DESTDIR=$startdir/pkg install
}
