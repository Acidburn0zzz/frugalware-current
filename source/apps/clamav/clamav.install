# arg 1:  the new package version
post_install() {
	groupadd clamav
	useradd -g clamav -s /bin/false -c "Clam AntiVirus" clamav
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
	/bin/true
}

# arg 1:  the old package version
pre_remove() {
	userdel -r clamav >/dev/null 2>&1
	groupdel clamav >/dev/null 2>&1
}

op=$1
shift

$op $*

