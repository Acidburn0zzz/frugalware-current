# chkconfig: 2345 50 50
# description: Start/stop Clam AntiVirus Daemon

source /lib/initscripts/functions
TEXTDOMAIN=clamav

actions=(restart start status stop)
daemon=$"Clam AntiVirus"

pid="$(pidof clamd 2> /dev/null)"

rc_start()
{
	start_msg
	if [ -z ${pid} ] ; then
		[ -f /tmp/clamd ] && rm -f /tmp/clamd
		/usr/sbin/clamd
		ok $?
	else
		ok 999
	fi
}

rc_stop()
{
	stop_msg
	if [ ! -z ${pid} ] ; then
		killall clamd
		ok $?
	else
		ok 999
	fi
}

rc_exec $1

