. /etc/rc.d/rc.functions

# chkconfig: 2345 50 50
# description: Start/stop Clam AntiVirus Daemon

if [ "$1" = "stop" ]; then
	stop "$stopclam"
	killall clamd
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startclam"
	rm -f /tmp/clamd
	/usr/sbin/clamd
	ok $?
fi
