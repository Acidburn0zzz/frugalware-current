# Last Modified: Sun, 30 Apr 2006 13:21:31 +0200
# Compiling Time: 0.51 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=clamav
pkgver=0.88.2
pkgrel=1
pkgdesc="Clam AntiVirus is a GPL anti-virus toolkit for UNIX"
url="http://www.clamav.net"
depends=('gmp' 'bzip2' 'curl>=7.10.0')
rodepends=('shadow')
backup=(etc/{freshclam,clamd}.conf)
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump http://prdownloads.sourceforge.net/clamav/?sort_by=date\&sort=desc|grep clamav-[0-9\.]*\.tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz\
	rc.clamav rc.clamav-hu.po)

build()
{
	Fbuild --disable-clamav --sysconfdir=/etc
	chown -R 26.26 $Fdestdir/usr/share/clamav || return 1
	Fsed '^Example' '# Example' $Fdestdir/etc/{clamd,freshclam}.conf
	Fsed '^#LogFile' 'LogFile'  $Fdestdir/etc/clamd.conf
	Fsed '/tmp/clamd.log' '/var/log/clamd.log' $Fdestdir/etc/clamd.conf
	Frcd2
}

# optimization OK
sha1sums=('6164a253b10c46ee93a821ce1fe86a167bd83cf5' \
	  '752e429d7069e3fd12589a1cb421b479c8cb76b4' \
	  '15f869fda7d4f21ace7d671d56d2e7d3327102ca')
