# Compiling Time: 0.01 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=nvidia-emul
pkgver=1.0_9746_4
pkgrel=1
pkgdesc="3d accelerated display driver for Nvidia cards (32bit emul)"
url="http://www.nvidia.com"
depends=('libx11-emul')
conflicts=('libgl-emul' 'libglx-emul')
provides=('libgl-emul' 'libglx-emul')
groups=('emul-extra')
archs=('!i686' 'x86_64')
Finclude emul
source=(http://ftp.frugalware.org/pub/frugalware/frugalware-current/frugalware-$_F_emul_arch/$_F_emul_name-1.0_9629-3-$_F_emul_arch.fpm)
sha1sums=('98f1c22dc3a8057b77f6df06cb454f389f10c2d7')

build()
{
	mkdir $Fsrcdir/tmp || return 1
	tar xf $_F_emul_name-1.0_9629-3-$_F_emul_arch.fpm -C tmp || return 1
	Fmkdir /usr/lib/chroot32
	cp -av tmp/* $Fdestdir/usr/lib/chroot32 || return 1
	Frm /usr/share/{doc,man}
	Frm /usr/lib/chroot32/lib
}
