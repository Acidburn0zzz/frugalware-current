# Compiling Time: 0.01 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=mpfr-emul
pkgver=2.2.1_1
pkgrel=1
pkgdesc="Library for multiple-precision floating-point computations (32bit emul)"
url="http://www.mpfr.org/mpfr-current/"
depends=('gmp-emul')
groups=('emul-extra')
archs=('!i686' 'x86_64')
Finclude emul
source=(http://ftp.frugalware.org/pub/frugalware/frugalware-current/frugalware-$_F_emul_arch/$_F_emul_name-2.2.0_16-1-$_F_emul_arch.fpm)
sha1sums=('285cdc84a799d10ec378d0705a29627323e8b8df')

build()
{
	mkdir $Fsrcdir/tmp || return 1
	tar xf $_F_emul_name-2.2.0_16-1-$_F_emul_arch.fpm -C tmp || return 1
	Fmkdir /usr/lib/chroot32
	cp -av tmp/* $Fdestdir/usr/lib/chroot32 || return 1
	Frm /usr/share/{doc,man}
}
