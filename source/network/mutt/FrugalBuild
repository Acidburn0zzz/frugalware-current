pkgname=mutt
pkgver=1.4.2.2
pkgrel=1
pkgdesc="A small but very powerful text-based mail client."
url="http://www.mutt.org/"
groups=('network')
archs=('i686' 'x86_64')
depends=('openssl' 'ncurses')
up2date="pud -p http://www.mutt.org/ -e 'Stable.*? Mutt ([\d\.]*) was'"
source=(ftp://ftp.mutt.org/$pkgname/$pkgname-${pkgver}i.tar.gz)
sha1sums=('0ee12f734f21186b143fa96a5ea79f72397747fb')

build() {
	Fbuild --enable-pop \
		--enable-imap \
		--enable-mailtool \
		--with-ssl
}

# optimization OK
