# Compiling Time: 0.2 SBU
# Contributor: VMiklos <vmiklos@frugalware.org>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=mutt
pkgver=1.4.2.2
pkgrel=2
pkgdesc="A small but very powerful text-based mail client."
url="http://www.mutt.org/"
groups=('network')
archs=('i686' 'x86_64')
depends=('openssl' 'ncurses')
conflicts=('mutt-devel' 'mutt-ng')
up2date="lynx -dump $url/download.html |grep tar |sed -ne 's/.*-\(.*\)i.t.*/\1/;1p'"
source=(ftp://ftp.mutt.org/$pkgname/$pkgname-${pkgver}i.tar.gz SA22613.patch)

build() {
	Fbuild --enable-pop \
		--enable-imap \
		--enable-mailtool \
		--with-ssl
}
sha1sums=('0ee12f734f21186b143fa96a5ea79f72397747fb' \
	  'b0bd9c4e83813d1ecac35a7d284e9ee4c48335e5')

# optimization OK
