. /etc/rc.d/rc.functions

# chkconfig: 2345 32 56
# description: Starts or stops OpenNTPD

if [ "$1" = "stop" ]; then
	stop "$stopntpd"
	killall ntpd
	ok $?
elif [ "$1" = "restart" ]; then
	stop "$stopntpd"
	killall ntpd
	sleep 2
	"$0" start
else # start
	start "$startntpd"
	/usr/sbin/ntpd
	ok $?
fi
