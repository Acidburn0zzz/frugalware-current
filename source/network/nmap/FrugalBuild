pkgname=nmap
pkgver=3.75
pkgrel=1
pkgdesc="A network exploration tool and security scanner"
url="http://www.insecure.org"
depends=('pcre' 'openssl')
makedepends=('gtk+')
up2date=`lynx -dump 'http://download.insecure.org/nmap/dist/?M=D'|grep -v [A-Z]|grep tgz$|sed -ne 's/.*p-\(.*\)\.tgz/\1/' -e '1 p'`
source=(http://download.insecure.org/$pkgname/dist/$pkgname-$pkgver.tgz)
md5sums=('fa537ab4ed0f4ee7550cffb15295312f')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
