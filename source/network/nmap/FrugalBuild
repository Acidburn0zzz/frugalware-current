pkgname=nmap
pkgver=6.47
pkgrel=1
pkgdesc="A network exploration tool and security scanner"
url="http://www.nmap.org"
depends=('openssl>=1.0.0' 'lua' 'libpcap>=1.2.0' 'libusb1' 'dbus')
groups=('network')
_F_archive_grepv="BETA"
archs=('i686' 'x86_64')
up2date="Flasttar https://nmap.org/dist/"
source=(http://nmap.org/dist/nmap-${pkgver}.tar.bz2)
sha1sums=('0c917453a91a5e85c2a217d27c3853b0f3e0e6ac')

build()
{

	Fcd
	Fbuild --with-libpcre=/usr \
		--with-openssl=/usr/include/openssl \
		--with-libpcap=/usr \
		--without-zenmap

}

# optimization OK
