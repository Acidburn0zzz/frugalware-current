pkgname=minicom
pkgver=2.1
pkgrel=2
pkgdesc="a full featured menu-driven serial communications package"
url="http://alioth.debian.org/projects/minicom"
groups=('network')
archs=('i686' 'x86_64')
depends=()
up2date="lynx -dump http://alioth.debian.org/projects/minicom/|grep Source|tr -s ' '|cut -d ' ' -f 3"
source=(http://alioth.debian.org/download.php/123/$pkgname-$pkgver.tar.gz)
sha1sums=('720273f6ee8db5fb2da4379ac610a520a31aba70')

build() {
  cd $startdir/src/$pkgname-2.1
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
}
