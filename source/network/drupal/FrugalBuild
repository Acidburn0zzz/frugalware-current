# Last Modified: Tue, 13 Jun 2006 07:29:01 +0100
# Compiling Time: 0 SBU
# Maintainer: AlexExtreme <alex.extreme2@gmail.com>

pkgname=drupal
pkgver=4.7.2
pkgrel=2
pkgdesc="An advanced content management system to manage your website"
url="http://drupal.org"
rodepends=('apache' 'php' 'mysql' 'webappconfig')
depends=()
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://drupal.org/project/drupal | grep 'latest release' | sed 's/.*(\(.*\),.*/\1/' | sed 's/,.*$//g'"
backup=(var/www/drupal/sites/default/settings.php)
source=(http://drupal.org/files/projects/drupal-$pkgver.tar.gz \
	drupalsetup README.Frugalware)
sha1sums=('004c420d837e8a02fe4abaa7c01db14a93bc85cc' \
	  'b942c666cf3f264bcab7cbdba8e614ad07f0a646' \
	  '64c0eadd7a2e00b11644458a4eeea8e3203fa739')

build()
{
	Fmkdir /var/www
	mv $Fsrcdir/$pkgname-$pkgver $Fdestdir/var/www/$pkgname
	Fexe /usr/bin/drupalsetup
}

# vim: ft=sh
