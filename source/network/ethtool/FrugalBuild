pkgname=ethtool
pkgver=3
pkgrel=1
pkgdesc="A tool for setting ethernet parameters"
url="http://sourceforge.net/projects/gkernel/"
depends=('glibc')
groups=('network')
archs=('i686' 'x86_64')
up2date="lynx -dump http://freshmeat.net/projects/ethtool/ | grep 'http.*ethtool.*\.tar\.gz' | sed -n 's/.*ethtool-\([0-9\.]\+\)\.tar\.gz$/\1/;1 p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/gkernel/$pkgname-$pkgver.tar.gz)
sha1sums=('c67b8dc298a6bf59255765d495987142340e842f')

build()
{
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

