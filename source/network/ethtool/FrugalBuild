pkgname=ethtool
pkgver=2
pkgrel=1
pkgdesc="A tool for setting ethernet parameters"
url="http://sourceforge.net/projects/gkernel/"
depends=('glibc')
up2date=`lynx -dump http://sourceforge.net/projects/gkernel/|grep ethtool|sed -n -e 's/.*]\([0-9\.]*\) .*/\1/' -e '1 p'`
source=(http://dl.sourceforge.net/sourceforge/gkernel/$pkgname-$pkgver.tar.gz)
md5sums=('b169ab16a9f011ff4b2f8aab81226ad3')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$startdir/pkg install
}
