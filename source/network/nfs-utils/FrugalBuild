# Last Modified: Thu, 21 Jul 2005 23:54:18 +0200
# Compiling Time: ~2 minutes
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=nfs-utils
pkgver=1.0.7
pkgrel=4
pkgdesc="Support programs for Network File Systems"
url='http://nfs.sourceforge.net'
groups=('network')
archs=('i686' 'x86_64')
backup=(etc/exports etc/conf.d/nfsd)
depends=('portmap' 'nfsidmap' 'libevent')
up2date="lynx -dump http://sourceforge.net/projects/nfs|grep nfs-utils|sed 's/.*]\([0-9\.]*\) .*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/nfs/$pkgname-$pkgver.tar.gz \
	exports rc.nfsd $pkgname-$pkgver-gcc4.patch)
md5sums=('8f863120261cd572ad320a9152581e11' '215c0531f55c849d7c43e6810eea34c4' \
	 '4885177044b3ac5da2e7fe5ce414c7a9' '77b7b275efe6533d3aaf065c89f804ef')

build()
{
	Fpatchall
	Fmake --with-statedir=/var/lib/nfs --enable-nfsv3 \
		    --enable-secure-statd --enable-gss=no --enable-nfsv4
	
	make install_prefix=$Fdestdir install
	Ffile /etc/exports
	Frcd nfsd
}

# vim: ft=sh

# optimalization OK
