pkgname=iproute2
pkgver=050816
pkgrel=1
pkgdesc="kernel routing and traffic control utilities"
url="http://developer.osdl.org/dev/iproute2/"
groups=('network')
archs=('i686' 'x86_64')
depends=('glibc')
up2date="lynx -dump '$url/download/?C=M;O=D'|grep tar.gz|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/download/$pkgname-$pkgver.tar.gz iproute-socket_h-fix.patch)
sha1sums=('0beb099bf49c534bcd2a72f2d696d32954f54efe' \
	  '9b59b57b57826a50d678cb4d911f2aa42e189f32')

build()
{
	Fsed "DOCDIR=/usr/share/doc/iproute2" \
		"DOCDIR=/usr/share/doc/iproute2-$pkgver" Makefile
	Fsed "CFLAGS =" "CFLAGS +=" Makefile
	Fbuild
	Frm /usr/man/man8/tc-bfifo.8
	Frm /usr/man/man8/tc-pfifo.o
}

# vim: ft=sh

# optimalization OK
