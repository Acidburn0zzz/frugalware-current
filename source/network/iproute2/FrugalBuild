pkgname=iproute2
pkgver=ss050607
pkgrel=1
pkgdesc="kernel routing and traffic control utilities"
url="http://developer.osdl.org/dev/iproute2/"
groups=('network')
archs=('i686' 'x86_64')
depends=('glibc')
up2date="elinks -dump $url/download/?M=A|grep 'tar.gz'|sed -n 's/-/_/g;s/.*2_\(.*\)\.t.*/\1/;$ p'"
source=($url/download/$pkgname-$pkgver.tar.gz iproute-socket_h-fix.patch)
md5sums=('89d25b1954be95bcbc3fa4957facc54b' 'ec3bcada540474e5cacb9799b3806086')

build()
{
	Fcd
	Fsed "DOCDIR=/usr/share/doc/iproute2" "DOCDIR=/usr/share/doc/iproute2-$pkgver" Makefile
	Fsed "CFLAGS =" "CFLAGS +=" Makefile
	Fpatchall || return 1
	Fmake || return 1
	Fmakeinstall || return 1
	Frm /usr/man/man8/tc-bfifo.8
	Frm /usr/man/man8/tc-pfifo.o
}

# vim: ft=sh

# optimalization OK
