pkgname=iproute2
pkgver=061002
kernelver=2.6.18
pkgrel=1
pkgdesc="kernel routing and traffic control utilities"
url="http://linux-net.osdl.org/index.php/Iproute2"
groups=('network')
archs=('i686' 'x86_64')
depends=('glibc' 'db')
makedepends=('bison')
up2date="lynx -dump 'http://developer.osdl.org/dev/iproute2/download/?C=M;O=D'|grep tar.gz|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://developer.osdl.org/dev/iproute2/download/$pkgname-$kernelver-$pkgver.tar.gz \
	iproute-socket_h-fix.patch)
sha1sums=('94f9b91d59e0e63b441130e158422a62a7a31b98' \
	  '9b59b57b57826a50d678cb4d911f2aa42e189f32')

build() {
	Fcd $pkgname-$kernelver-$pkgver
	Fsed "DOCDIR=/usr/share/doc/iproute2" \
		"DOCDIR=/usr/share/doc/iproute2-$pkgver" Makefile
	Fsed "CFLAGS =" "CFLAGS +=" Makefile
	Fbuild
	Frm /usr/share/man/man8/tc-bfifo.8
	Frm /usr/share/man/man8/tc-pfifo.o
}

# optimization OK
