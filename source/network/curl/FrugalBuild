options+=('asneeded')

pkgname=curl
pkgver=7.26.0
pkgrel=2arcturus4
pkgdesc="A command line tool for transferring data specified with URL syntax."
url="http://curl.haxx.se"
makedepends=('groff')
depends=('openssl>=1.0.0' 'c-ares>=1.6' 'libidn' 'libssh2>=1.3.0' 'gnutls>=2.12.12')
groups=('network')
archs=('i686' 'x86_64' 'arm')
Fconfopts+=" --enable-ares" #ares necessary for rtorrent
up2date="lynx -dump $url/download.html|grep Released|tr -s ' '|sed 's/, / /'|cut -d ' ' -f 3"
source=(http://curl.haxx.se/download/$pkgname-$pkgver.tar.bz2)
signatures=($source.asc)

# FSA fix ***
source=(${source[@]} CVE-2013-0249.patch CVE-2013-2174.patch CVE-2013-6422.patch
                     CVE-2013-1944.patch CVE-2013-4545.patch CVE-2014-0015.patch
                     CVE-2014-0138.patch CVE-2014-0139.patch CVE-2014-3613.patch
                     CVE-2014-3620.patch)
signatures=(${signatures[@]} '' '' '' '' '' '' '' '' '' '')
