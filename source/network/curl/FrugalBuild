pkgname=curl
pkgver=7.54.0
pkgrel=3
pkgdesc="A command line tool for transferring data specified with URL syntax."
url="http://curl.haxx.se"
makedepends=('groff')
depends=('nghttp2>=1.7.1-2' 'libidn2>=0.11' 'libssh2>=1.7.0-4')
rodepends=('c-ares>=1.11.0-2') # Binary backward compatibility
groups=('network')
archs=("x86_64")
options+=('static') ## pacman
Fconfopts+=" --enable-threaded-resolver --enable-static --enable-ipv6 --disable-ldap --disable-ldap" # asynchronous resolver is required by various tools.
F32confopts+="	--without-libssh2"
up2date="Flasttarbz2 $url/download.html"
source=(http://curl.haxx.se/download/$pkgname-$pkgver.tar.bz2)
signatures=($source.asc)
_F_cross32_subdepends=('lib32-zlib' 'lib32-openssl')
_F_cross32_simple="yes"
Finclude cross32

# optimization OK
