pkgname=curl
pkgver=7.46.0
pkgrel=2
pkgdesc="A command line tool for transferring data specified with URL syntax."
url="http://curl.haxx.se"
makedepends=('groff')
depends=('openssl>=1.0.2-4' 'libidn>=1.32-4' 'libssh2>=1.6.0-4' 'gnutls>=3.4.7-3' 'nghttp2>=1.6.0-2')
rodepends=('c-ares>=1.10.0-4') # Binary backward compatibility
groups=('network')
archs=('i686' 'x86_64' 'arm')
Fconfopts+=" --enable-threaded-resolver --enable-static=no --disable-static" # asynchronous resolver is required by various tools.
up2date="Flasttarbz2 $url/download.html"
source=(http://curl.haxx.se/download/$pkgname-$pkgver.tar.bz2)
signatures=($source.asc)

