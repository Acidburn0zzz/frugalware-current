# Last Modified: Mon, 24 Apr 2006 01:11:16 +0200
# Compiling Time: 0.17 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=madwifi-ng
pkgver=r1491_20060404
pkgrel=3
pkgdesc="Madwifi drivers for Atheros wireless chipsets"
url="http://madwifi.sourceforge.net/"
Finclude kernel-module
depends=(${depends[@]} 'wireless_tools')
replaces=('madwifi')
makedepends=(${makedepends[@]} 'sharutils')
groups=('network')
archs=('i686')
up2date="$pkgver" # no releases yet
source=(http://snapshots.madwifi.org/madwifi-ng/madwifi-ng-${pkgver//_/-}.tar.gz \
	madwifi-ng-${pkgver//_/-}-cflags.diff)
sha1sums=('5dcca8545112b6ff247cd3e9eac48ca3036e78da' \
	  'c39d6ff5f9fdd173f6949c7c79c095d04d12e8be')

# If the package needs testing, feel free to poke Benjamin Woods <woodsb02@gmail.com>

build()
{
	Fcheckkernel
	Fcd $pkgname-${pkgver//_/-}
	Fpatchall
	Fmake
	Fmakeinstall KERNELPATH=/usr/src/linux-`uname -r` \
		MODULEPATH=/lib/modules/`uname -r`/kernel/drivers/net/wireless \
		BINDIR=/usr/bin MANDIR=/usr/man
}

# optimalization OK

# optimization OK
