pkgname=wpa_supplicant
pkgver=0.4.9
pkgrel=1
pkgdesc="Linux WPA/WPA2/IEEE 802.1X Supplicant"
url="http://hostap.epitest.fi/wpa_supplicant/"
depends=('openssl')
backup=(etc/wpa_supplicant.conf)
makedepends=('qt')
groups=('network')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep -1 stable|sed -n 's/.*-\(.*\)\.t.*/\1/;3 p'"
source=(http://hostap.epitest.fi/releases/wpa_supplicant-$pkgver.tar.gz \
	config)
options=('scriptlet')

build()
{
	Fsed /usr/local /usr Makefile
	cp $Fsrcdir/config .config
	Fbuild
	Ffilerel /etc/wpa_supplicant.conf
	cd wpa_gui
	qmake -makefile
	Fmake
	Fexerel /usr/sbin/wpa_gui
}

# optimization OK
sha1sums=('e6a5cd6fbb7f12cc0a074da212f4fd7fbde0aec0' \
	  '7f50e8529e248409d986737668fe666768db7c5b')
