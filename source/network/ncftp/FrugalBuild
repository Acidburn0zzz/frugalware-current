pkgname=ncftp
pkgver=3.2.0
pkgrel=1
pkgdesc="Console based FTP client"
url="http://www.ncftp.com/"
depends=('ncurses')
groups=('network')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download/|grep src.tar.gz$|sed -n 's/.*-\(.*\)-.*/\1/;1 p'"
source=(ftp://ftp.ncftp.com/$pkgname/$pkgname-$pkgver-src.tar.bz2)

# optimization OK

