pkgname=elinks
pkgver=0.10.4
pkgrel=2
pkgdesc="An advanced and well-established feature-rich text mode web browser"
url="http://elinks.or.cz/"
depends=('bzip2' 'expat' 'gpm' 'openssl' 'zlib' 'lua')
groups=('network')
replaces=('links')
up2date=`lynx -dump http://elinks.or.cz/download.html|grep "Current stable"|sed 's|.*: *\([0-9\.]*\).*|\1|'`
source=(http://elinks.or.cz/download/$pkgname-$pkgver.tar.bz2)
md5sums=('0bcc8324f70dba46503af15023c8ee0f')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc --disable-smb --without-x \
		--enable-local-cgi --enable-leds

	make || return 1

	make DESTDIR=$startdir/pkg install
	rm -f $startdir/pkg/usr/share/locale/locale.alias
}

# vim: ft=sh
