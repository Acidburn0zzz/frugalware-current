# Last Modified: Tue, 29 Mar 2005 13:35:08 +0200
# Compiling Time: ~4 minutes
# Maintainer: Karoly CZOVEK <slinky@rei.keni.hu>

pkgname=wvstreams
pkgver=4.0.2
pkgrel=1
pkgdesc="Stream library for WVDial CLI dialer"
groups=('network')
archs=('i686')
up2date="lynx -dump 'http://open.nit.ca/wiki/index.php?page=DownloadReleases' | grep \"wvstreams-.*.tar.gz\"$ | sed -n 's/.*wvstreams-\(.*\)\.tar\.gz/\1/g;1 p'"
url="http://www.csclub.uwaterloo.ca/~ja2morri"
#url="http://open.nit.ca/download"
source=("$url/$pkgname-$pkgver.tar.gz" 'patch-missing_qt-mt.diff')
md5sums=('ecb4e74ebaa1f45206f5d88eb34c5623' 'c042b1dd7b7109f431a3a05078cd9ced')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p0 -i $startdir/patch-missing_qt-mt.diff
	./configure --prefix=/usr --without-pam
	make || return 1
	make DESTDIR=$startdir/pkg install
}
