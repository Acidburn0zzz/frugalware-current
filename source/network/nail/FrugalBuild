pkgname=nail
pkgver=11.13
pkgrel=1
pkgdesc="A mail user agent derived from Berkeley Mail 8.1 and contains builtin support for MIME messages and IPv6"
url="http://nail.sourceforge.net/"
backup=('etc/nail.rc')
depends=('glibc')
up2date=`lynx -dump http://nail.sourceforge.net/ |grep current|tr -s ' '|cut -d ' ' -f 3`
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('42dc330100e63ad7b16c927043f36046')

build() {
	cd $startdir/src/$pkgname-$pkgver

	make || return 1

	make DESTDIR=$startdir/pkg UCBINSTALL=/bin/install install
	mv $startdir/pkg/usr/local/* $startdir/pkg/usr/
	cd $startdir/pkg/usr/bin
	ln -s nail mail
	pwd
	cd ../share/man/man1
	ln -sf nail.1.gz mail.1.gz
}

# vim: ft=sh
