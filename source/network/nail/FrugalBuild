pkgname=nail
pkgver=11.22
pkgrel=2
pkgdesc="A MUA derived from Berkeley Mail 8.1 and contains builtin support for MIME messages and IPv6"
url="http://nail.sourceforge.net/"
backup=('etc/nail.rc')
depends=('glibc')
groups=('network')
up2date="lynx -dump $url|grep current|tr -s ' '|cut -d ' ' -f 3"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('caad4c4cd02c7fbf0d9e7fec50ff3b21')

build()
{
	Fsed "/usr/lib/sendmail" "/usr/sbin/sendmail" {Makefile,INSTALL,nail.1}
	Fmake || return 1
	Fmakeinstall UCBINSTALL=`which install`
	Fmv /usr/local/bin /usr/
	Fmv /usr/local/share /usr/
	Frm /usr/local
	Fln nail /usr/bin/mail
	Fln nail.1.gz /usr/share/man/man1/mail.1.gz
}

