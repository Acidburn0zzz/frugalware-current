pkgname=tcpdump
pkgver=3.8.3
pkgrel=1
pkgdesc="Tcpdump is for dumping traffic on a network"
url="http://www.tcpdump.org"
depends=('glibc' 'libpcap')
groups=('network')
archs=('i686' 'x86_64')
source=($url/release/$pkgname-$pkgver.tar.gz)
up2date="lynx -dump $url/release/|grep tcpdump-.*gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
md5sums=('30645001f4b97019677cad88d3811904')

