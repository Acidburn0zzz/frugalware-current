pkgname=tcpdump
pkgver=3.9.5
pkgrel=2
pkgdesc="Tcpdump is for dumping traffic on a network"
url="http://www.tcpdump.org"
depends=('openssl' 'libpcap>=0.9.5')
groups=('network')
archs=('i686' 'x86_64')
source=($url/release/$pkgname-$pkgver.tar.gz CVE-2007-1218.patch)
up2date="lynx -dump $url|grep -om1 'tcpdump-\(.*\).tar.gz'|sed 's/.*-\(.*\).t.*/\1/'"
Fconfopts="$Fconfopts --enable-ipv6"
sha1sums=('a9850177809196008ed3e6212cb651ed1500353c'\
          '329385e248a9e28793095caa618fbd7826cd937f')
# optimization OK
