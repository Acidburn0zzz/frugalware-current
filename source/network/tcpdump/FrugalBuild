pkgname=tcpdump
pkgver=3.9.5
pkgrel=1
pkgdesc="Tcpdump is for dumping traffic on a network"
url="http://www.tcpdump.org"
depends=('openssl' 'libpcap>=0.9.5')
groups=('network')
archs=('i686' 'x86_64')
source=($url/release/$pkgname-$pkgver.tar.gz)
up2date="lynx -dump $url/release/|grep tcpdump-.*gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
Fconfopts="$Fconfopts --enable-ipv6"
sha1sums=('a9850177809196008ed3e6212cb651ed1500353c')



