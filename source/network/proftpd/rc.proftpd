. /etc/rc.d/rc.functions

# chkconfig: 2345 60 50
# description: ProFTPd is a ftp daemon, which is the program \
#              that answers incoming ftp service requests.

if [ "$1" = "stop" ]; then
	stop "$stopproftp"
	killall proftpd
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startproftp"
	proftpd
	ok $?
fi
