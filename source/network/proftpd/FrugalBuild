# Compiling Time: ~0.52 SBU
# Contributor: VMiklos <vmiklos@frugalware.org>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=proftpd
pkgver=1.3.0
pkgrel=1
pkgdesc="Highly configurable GPL-licensed FTP server software"
url="http://www.proftpd.org/"
groups=('network')
archs=('i686' 'x86_64')
depends=('glibc' 'openssl' 'ncurses')
makedepends=('tcp_wrappers')
backup=(etc/{proftpd.conf,ftpusers})
up2date="pud -p http://www.proftpd.org/ -e 'Stable: (.*?)\s'"
source=(ftp://ftp.proftpd.org/distrib/source/$pkgname-$pkgver.tar.bz2 \
	rc.proftpd proftpd.conf ftpusers)
sha1sums=('d117134035a3d8d130c5aa44d6b1788683a33410' \
	'42e7041d44446bdc9577a3c06fc78c97e95d00e1' \
	'08eef67bc0bf9b851899189e99ab08dc3120f064' \
	'b98fb782b45916364e5dd0ce4084bf86bdc20ae4')

build() {
	Fbuild --disable-pam \
		--enable-autoshadow \
		--localstatedir=/var/run \
		--with-modules=mod_readme:mod_ratio:mod_tls:mod_wrap
	Fmkdir /home/ftp
	Frm /etc/*
	Ffile /etc/proftpd.conf
	Ffile /etc/ftpusers
	Frcd
}

# optimalization OK
