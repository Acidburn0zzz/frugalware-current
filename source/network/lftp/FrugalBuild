pkgname=lftp
pkgver=3.0.10
pkgrel=1
pkgdesc="A sophisticated ftp/http client, file transfer program"
url="http://lftp.yar.ru/"
depends=('gcc' 'openssl')
backup=('etc/lftp.conf')
up2date=`lynx -dump http://lftp.yar.ru/|grep released|sed -ne 's/.*p-\(.*\) r.*/\1/' -e '1 p'`
source=(http://ftp.yars.free.net/pub/software/unix/net/ftp/client/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('4bd653e8a6f9888fff090caec07194b1')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
