pkgname=httpircproxy
realname=HttpIrcProxy
pkgver=0.36
pkgrel=1
pkgdesc="HTTP proxy server for jmIrc"
url="http://jmirc.sourceforge.net/"
depends=('j2re')
makedepends=('j2sdk')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://prdownloads.sourceforge.net/jmirc/|grep $realname-[0-9\.]*tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/jmirc/$realname-$pkgver.tar.gz \
	$pkgname rc.$pkgname README.Frugalware)
sha1sums=('ea9711658a8a3a2f6b2e31772e0bfbe0060ce8f0' \
          'a4e03c729b686eff89b5379a28829c7fd40a6a2e' \
          '9db3851fc42402e712d52292b43e2106735d12a5' \
          '3e11c88b0a74ccf21223871d2a01ff1a778dd56c')

build()
{
	Fcd $realname
	Fmake
	Ffilerel /usr/lib/$pkgname/$realname.jar
	Fexe /usr/bin/$pkgname
	Frcd
	Fdoc README.Frugalware
}
