. /etc/rc.d/rc.functions

# chkconfig: 2345 26 50
# description: Internet super-server - ported from OpenBSD

if [ "$1" = "stop" ]; then
	stop "$stopinetd"
	killall inetd
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startinetd"
	/usr/sbin/inetd
	ok $?
fi
