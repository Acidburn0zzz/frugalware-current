# Last Modified: Thu, 02 Jun 2005 16:52:00 +0000
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=procmail
pkgver=3.22
pkgrel=3
pkgdesc="A mail processing and local delivery program"
depends=('glibc')
groups=('network')
archs=('i686' 'x86_64')
up2date="wget --passive-ftp -O - -q ftp://ftp.procmail.net/pub/procmail/|grep 'procmail-[0-9\.]*tar.gz<'|sed -n 's/.*l-\([0-9\.]*\)\..*/\1/;$ p'"
source=(http://www.procmail.org/$pkgname-$pkgver.tar.gz)
md5sums=('1678ea99b973eb77eda4ecf6acae53f1')

build() {
	cd $startdir/src/$pkgname-$pkgver
	for i in Makefile src/Makefile man/Makefile
	do
		sed -i "s/CFLAGS0 = -O/CFLAGS0 = -O $CFLAGS/" $i
	done

	yes n | make LOCKINGTEST="/tmp ." || return 1

	mkdir -p $startdir/pkg/usr/man/man{1,5}
	install -D -m4755 src/procmail $startdir/pkg/usr/bin/procmail
	install -m755 src/{formail,lockfile} $startdir/pkg/usr/bin/
	install -m644 man/*.1 $startdir/pkg/usr/man/man1/
	install -m644 man/*.5 $startdir/pkg/usr/man/man5/
}

# vim: ft=sh
