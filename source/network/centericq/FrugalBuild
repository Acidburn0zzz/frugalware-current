# Compiling Time: ~25 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=centericq
pkgver=4.12.0
pkgrel=1
pkgdesc="A text mode menu- and window-driven IM interface."
url="http://konst.org.ua/centericq/"
depends=('gcc' 'openssl' 'libjpeg')
up2date=`lynx -dump $url|grep Release|sed 's/.*e \(.*\) f.*/\1/'`
source=(http://konst.org.ua/download/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-gcc34.diff)
md5sums=('dfaaf615cf36d96bcc2a52a81ad52a82' 'ec7a0254b0ad0d81927bcbe97ee5dd6c')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/$pkgname-$pkgver-gcc34.diff
	./configure --prefix=/usr
	
	make || return 1
	
	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
