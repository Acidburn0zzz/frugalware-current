# Last Modified: Sat, 08 Jul 2006 00:15:36 +0200
# Compiling Time: 0.01 SBU
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=squirrelmail
pkgver=1.4.7
pkgrel=1
pkgdesc="SquirrelMail is a standards-based webmail package written in PHP"
rodepends=('php')
backup=(var/www/squirrelmail/config/config.php)
groups=('network-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="lynx -dump http://www.squirrelmail.org/download.php|grep 'squirrelmail-'|sed -n 's/.*squirrelmail-\(.*\)\.t.*/\1/; 1 p'"
source=($source README.Frugalware)
sha1sums=('1ad453e35b716a38fcf346525322ba6b932e2bb5' \
          '1bfe33f98b235076efc97764d8b0224fb1141f65')

build()
{
        Fmkdir /var/www/ /usr/share/doc/
	mv $pkgname-$pkgver $Fdestdir/usr/share/
	Fln /usr/share/$pkgname-$pkgver/ /var/www/squirrelmail
	chown nobody $Fdestdir/usr/share/$pkgname-$pkgver/data
	Fdoc README.Frugalware
}
