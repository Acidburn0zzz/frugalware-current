pkgname=pgp4pine
pkgver=1.76
pkgrel=2
pkgdesc="A PGP/GnuPG wrapper for Pine and general use"
url="http://pgp4pine.flatline.de/"
groups=('network')
archs=('i686' 'x86_64')
depends=('glibc' 'gnupg' 'pine')
up2date="lynx -dump $url|grep $pkgname.*tar.gz$|sed -n -e 's/.*e-\(.*\).tar.gz$/\1/' -e '1 p'"
source=($url$pkgname-$pkgver.tar.gz)
md5sums=('235c44e0ef18dc3d0c78b3038c2ac56a')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	touch stamp-h.in
	make || return 1
	make prefix=$startdir/pkg/usr docdir=$startdir/pkg/usr/share/doc install
}

# vim: ft=sh
