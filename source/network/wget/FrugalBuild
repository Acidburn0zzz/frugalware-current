pkgname=wget
pkgver=1.9.1
pkgrel=3
pkgdesc="A network utility to retrieve files from the Web"
groups=('network')
depends=('glibc' 'openssl')
up2date=`lynx -dump 'http://ftp.gnu.org/pub/gnu/wget/?M=D'|grep tar.gz$|sed -n 's/.*-\(.*\).t.*/\1/;1 p'`
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-hu.patch \
	$pkgname-$pkgver-passive.patch)
md5sums=('e6051f1e1487ec0ebfdbda72bedc70ad' \
	'730bd12e416ee4c3b7caeb1fc2287e12' \
	'689d1afa0920fa5a1ffffd72c7275dce')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/$pkgname-$pkgver-hu.patch || return 1
	patch -p1 < $startdir/src/$pkgname-$pkgver-passive.patch || return 1
	./configure --prefix=/usr --sysconfdir=/etc

	make || return 1

	make prefix=$startdir/pkg/usr sysconfdir=$startdir/pkg/etc install
}

# vim: ft=sh
