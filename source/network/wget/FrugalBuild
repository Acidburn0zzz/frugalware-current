pkgname=wget
pkgver=1.10.2
pkgrel=1
pkgdesc="A network utility to retrieve files from the Web"
url="http://www.gnu.org/software/wget/wget.html"
depends=('openssl=0.9.8' 'texinfo')
groups=('network' 'chroot-core')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://ftp.gnu.org/pub/gnu/wget/?M=D'|grep tar.gz$|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('a258357297959964fd42fed6afa1a4cce9069980')

build() {
	Fmake
	Fmakeinstall sysconfdir=$Fdestdir/etc

	# Remove incomplete Hungarian translation.
	Frm /usr/share/locale/hu
}

# optimalization OK

