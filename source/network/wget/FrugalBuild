pkgname=wget
pkgver=1.10
pkgrel=2
pkgdesc="A network utility to retrieve files from the Web"
url="http://www.gnu.org/software/wget/wget.html"
depends=('openssl' 'texinfo')
groups=('network')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump 'http://ftp.gnu.org/pub/gnu/wget/?M=D'|grep tar.gz$|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname.install)
md5sums=('caddc199d2cb31969e32b19fd365b0c5' \
	'8626f29edfc9adc0be236fbe0729cf29')

build() {
	Fmake --sysconfdir=/etc || return 1

	Fmakeinstall prefix=$startdir/pkg/usr sysconfdir=$startdir/pkg/etc

	# Remove incomplete Hungarian translation.
	Frm /usr/share/locale/hu
}
# vim: ft=sh
# optimalization OK
