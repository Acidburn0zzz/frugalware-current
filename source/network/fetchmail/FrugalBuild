pkgname=fetchmail
pkgver=6.2.5.4
pkgrel=1
pkgdesc="A remote-mail retrieval and forwarding utility."
url="http://catb.org/~esr/fetchmail/"
depends=('openssl')
groups=('network')
archs=('i686' 'x86_64')
up2date="lynx -dump http://developer.berlios.de/projects/fetchmail|grep fetchmail|sed 's/.*l \([^ ]*\) .*/\1/;q'"
source=(http://download.berlios.de/fetchmail/$pkgname-$pkgver.tar.gz rmconf.diff)
sha1sums=('481f6ba7637f4471d93f80907e309e60dfe63f44' \
	  '8b80475c609066c4462ebdd172b9f88160a8ddfd')

build() {
	Facu	
	Fbuild --with-ssl --enable-RPA --enable-NTLM --enable-SDPS --enable-inet6
}

