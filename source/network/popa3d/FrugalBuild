# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=popa3d
pkgver=0.6.4.1
pkgrel=1
pkgdesc="A Post Office Protocol version 3 (POP3) server"
url="http://www.openwall.com/popa3d/"
depends=('glibc' 'openssl' 'inetd')
install=$pkgname.install
up2date=`lynx -dump http://www.openwall.com/popa3d/|grep 'version [0-9]'|sed -n -e 's/.*n \([0-9\.]*\) a.*/\1/' -e '1 p'`
source=(http://www.openwall.com/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver.diff)
md5sums=('5e352b7eebe59f184ce0b0c4c9731c89' '68bc7d930ff61fb9b5d714ebf57f8244')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/$pkgname-$pkgver.diff
	
	make || return 1

	make DESTDIR=$startdir/pkg install
	mkdir -p $startdir/pkg/var/spool/pop
}

# vim: ft=sh
