pkgname=popa3d
pkgver=1.0
pkgrel=1
pkgdesc="A Post Office Protocol version 3 (POP3) server"
url="http://www.openwall.com/popa3d/"
groups=('network')
archs=('i686' 'x86_64')
depends=('openssl')
up2date="pud -s http://www.openwall.com/popa3d/ -e 'popa3d-(.*?).tar'"
source=(http://www.openwall.com/$pkgname/$pkgname-$pkgver.tar.gz popa3d-$pkgver.diff)
sha1sums=('f2f69c75fde39af732cb879e486a1a32dc700343' \
          '4d34d341404e9d85ec03b5b162ad0f127eba598d')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/$pkgname-$pkgver.diff || return 1
	
	make || return 1

	make DESTDIR=$startdir/pkg install
	mkdir -p $startdir/pkg/var/spool/pop
}
