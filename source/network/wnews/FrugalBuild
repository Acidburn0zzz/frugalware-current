# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=wnews
pkgver=0.7
pkgrel=1
pkgdesc="A console-based RSS news reader for UNIX platforms."
url="http://www.kerneled.org/projects/wnews/"
depends=('ncurses')
groups=('network')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep [0-9].tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/'"
source=(http://www.kerneled.org/projects/wnews/releases/$pkgname-$pkgver.tar.gz)
md5sums=('b631dc2dbb52700939f8aa8471bea58d')

build()
{
	Fmake || return 1
	Fmkdir /usr/bin /usr/man/man1
	make PREFIX=$Fdestdir/$Fprefix INSDIR=$Fdestdir/$Fprefix/man/man1 \
		install
}

# optimalization ok

