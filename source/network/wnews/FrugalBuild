# Compiling Time: 0.03 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=wnews
pkgver=0.7
pkgrel=1
pkgdesc="A console-based RSS news reader for UNIX platforms."
url="http://www.kerneled.org/projects/wnews/"
depends=('ncurses')
groups=('network')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/releases|grep [0-9].tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/'"
source=(http://www.kerneled.org/projects/wnews/releases/$pkgname-$pkgver.tar.gz)
sha1sums=('537f71646e02ffc9e4cdf6d320d79518803a2e69')

build()
{
	Fmake || return 1
	Fmkdir /usr/bin /usr/man/man1
	make PREFIX=$Fdestdir/$Fprefix INSDIR=$Fdestdir/$Fprefix/man/man1 \
		install
}


# optimization OK
