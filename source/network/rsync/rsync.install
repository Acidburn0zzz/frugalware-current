# arg 1:  the new package version
post_install() {
	[ -z "`grep '^rsyncd:' /etc/group`" ] && \
		groupadd rsyncd
	[ -z "`grep '^rsyncd:' /etc/passwd`" ] && \
		useradd -g rsyncd rsyncd
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
	post_install $1
}

# arg 1:  the old package version
pre_remove() {
	userdel rsyncd
}

op=$1
shift

$op $*

