. /etc/rc.d/rc.functions

# chkconfig: 2345 90 10
# description: Start/stop the rsync server, an open source utility that \
#              provides fast incremental file transfer

if [ "$1" = "stop" ]; then
	stop "$stoprsync"
	killall rsync
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startrsync"
	rsync -4 --daemon
	ok $?
fi
