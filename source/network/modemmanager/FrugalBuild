groups=('network')
archs=('i686' 'x86_64' 'ppc')
Finclude gnome
#use snapshot
source=("http://dev.gentoo.org/~dagger/files/ModemManager-0.4$snapVer.tar.bz2")
options=('scriptlet')
_F_cd_path=$_F_gnome_name-$pkgver$snapVer
Fconfopts="$Fconfopts --with-tests=yes --disable-more-warnings --with-polkit=yes \
	--with-pppd-plugin-dir=/usr/lib/pppd/$pppVer --with-udev-base-dir=/etc/udev/"
