pkgname=modemmanager
_F_gnome_name=ModemManager
pkgver=0.4
snapVer="_p20110205"
pkgrel=1
pppVer=2.4.5
pkgdesc="Mobile broadband modem management service"
depends=("polkit" "ppp=$pppVer" "libgudev")
