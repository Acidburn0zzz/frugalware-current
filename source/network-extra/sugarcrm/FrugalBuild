# Compiling time: 0.02 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=sugarcrm
origname=SugarSuite
pkgver=4.5.0d
pkgrel=1
pkgdesc="Opensourced CRM application."
url="http://www.sugarforge.org"
license="MPL-1.1"
depends=('apache' 'php' 'mysql' 'imap')
archs=('i686' 'x86_64')
groups=('network-extra')
up2date="lynx -dump $url/content/downloads/|grep 'SugarSuite.*\.zip'|sort|sed -n 's/.*-\([0-9\.a-z]\+\)\.zip.*/\1/;1p'"
# check $dirnum
# lynx -dump $url/content/downloads/|grep 'SugarSuite.*\.zip'|sort|sed 's/.*.php\///g;s/\/.*.//;1q'
dirnum=2072
source=(http://www.sugarforge.org/frs/download.php/$dirnum/$origname-$pkgver.zip README.Frugalware)
sha1sums=('0075862ac0f6ee6f2784ae2168de031b16048c1a' \
          'a185a0383308d5ad2a990b84fdae1b88557af6b2')

build() {
	Fcd $origname-Full-$pkgver
	Fmkdir /var/www/$origname
        Fcpr $origname-Full-$pkgver/* var/www/$origname
	Fdirschmod var/www/$origname 777
	Ffileschmod var/www/$origname 666
	Fdoc README.Frugalware
}

# php code, no need of optimization
