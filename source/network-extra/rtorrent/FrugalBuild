pkgname=rtorrent
pkgver=0.8.7
pkgrel=4
pkgdesc="The ncurses client for libtorrent."
url="http://libtorrent.rakshasa.no/"
depends=('ncurses' 'libtorrent>=0.12.6' 'xmlrpc-c>=1.11.00' 'c-ares>=1.6' 'openssl>=1.0.0')
groups=('network-extra')
replaces=('btg')
archs=('i686' 'x86_64')
Fconfopts="$Fconfopts --with-xmlrpc-c"
up2date="Flasttar $url"
source=(http://libtorrent.rakshasa.no/downloads/rtorrent-$pkgver.tar.gz curl_segfault_dirty_hack.diff $pkgname-segfault.patch)
sha1sums=('691c95e948d02927edc05321e52cd1c63513fabc' \
          '583dadf10d30956ec796ec9f3c2c4d5dfff64c79' \
          '435f5a73ffac3115fc9f815451a0366f19ed5f7a')

build()
{
	Fbuild
	Fmanrel doc/rtorrent.1
}

