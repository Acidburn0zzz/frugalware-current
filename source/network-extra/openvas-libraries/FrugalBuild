pkgname=openvas-libraries
pkgver=9.0.1
pkgrel=2
pkgdesc="OpenVAS libraries."
url="http://www.openvas.org"
up2date="Flasttar ${url}/install-source.html"
depends=('gnutls>=3.4.2' 'libssh' 'hiredis' 'gpgme' 'libpcap' 'libldap')
makedepends=('doxygen')
Finclude cmake
groups=('network-extra')
archs=('x86_64')
## check source link from http://www.openvas.org/install-source.html
source=(http://wald.intevation.org/frs/download.php/2420/$pkgname-$pkgver.tar.gz)
sha1sums=('d7f734f5d3ebe1fdf1be1ee3182def1409a78f4c')

_F_cmake_confopts+="	-DCMAKE_BUILD_TYPE=Release \
			-DCMAKE_INSTALL_PREFIX=/usr \
			-DLIBDIR=/usr/lib \
			-DSYSCONFDIR=/etc \
			-DLOCALSTATEDIR=/var"

build() {
	CMake_build

	# garbage
	Frm /usr/share/openvas
}

# optimization OK
