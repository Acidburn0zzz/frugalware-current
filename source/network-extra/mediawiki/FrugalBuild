pkgname=mediawiki
pkgver=1.8.1
pkgrel=1
pkgdesc="The collaborative editing software that runs Wikipedia"
url="http://www.mediawiki.org"
rodepends=('webappconfig' 'apache' 'php>=5.0' 'mysql>=4.0')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/wiki/Download |grep tar.gz |sed -ne 's/.*i-\(.*\).t.*/\1/;1 p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/wikipedia/mediawiki-$pkgver.tar.gz README.Frugalware mediawikisetup)
sha1sums=('7220b680809ca8ac8830ab1c77b2f29d12a115eb' \
	  '2c70930c46b8a5d87e830f64dc2761c5506ce967' \
	  'b9810ea6531b4f61e41778b76f7601f2c4f9b0e2')

build()
{
	Fcd ""
	Fmkdir /var/www
	Fmv ../src/$pkgname-$pkgver /var/www/mediawiki
	Fdoc README.Frugalware
	Fexe /usr/bin/mediawikisetup
}
# php code, no need of optimalization
