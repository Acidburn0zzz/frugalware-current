pkgname=fusedav
pkgver=0.2
pkgrel=2
pkgdesc="a Linux userspace file system driver for mounting WebDAV shares."
url="http://0pointer.de/lennart/projects/fusedav/"
depends=('fuse>=2.5' 'neon>=0.26' 'heimdal>=1.1')
makedepends=('xfsprogs-attr')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |Flasttar"
source=(http://0pointer.de/lennart/projects/fusedav/fusedav-$pkgver.tar.gz compile.patch)
sha1sums=('479088de5c8f02233f739441d218f2a641a68c2c' \
          'feb9ba5908f6cf975a7f42a701b450bb83a70f00')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
}

# optimization OK
