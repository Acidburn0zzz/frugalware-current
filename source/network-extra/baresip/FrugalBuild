# Compiling Time: 0.13 SBU
# Maintainer: Slown <slown@frugalware.org>

options+=('asneeded')

pkgname=baresip
pkgver=0.4.8
pkgrel=1
pkgdesc="A portable and modular SIP User-Agent with audio and video support"
url="http://www.creytiv.com"
depends=('librem>=0.4.2' 'gstreamer' 'ffmpeg>=1.0.6-6' 'mpg123' 'celt' 'portaudio' \
	'util-linux' 'v4l-utils')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/pub"
source=($url/pub/$pkgname-$pkgver.tar.gz)
sha1sums=('8118943ec83b8d3215c5634ee4f0c00e37aad0bf')

build() {
	Fcd
	make EXTRA_CFLAGS="-I/usr/include/rem"
	Fmakeinstall
}
