# Compiling time: 0.01 SBU
# Maintainer: Janny <janny@frugalware.org>
 
pkgname=atl2
pkgver=2.0.4
pkgrel=1
pkgdesc="Driver for the Attansic/Atheros L2 Fast Ethernet Adapter"
url="http://people.redhat.com/csnook/${pkgname}"
license="GPL"
Finclude kernel-module
archs=('i686' 'x86_64')
groups=('network-extra')
up2date="lynx -dump $url | grep ${pkgname} | Flasttarbz2"
source=(${url}/$pkgname-$pkgver.tar.bz2)
sha1sums=('edcc12c0baecff03d5fd73dae16e42d35fd9d96b')

build() {
	Fmake
	Ffilerel $_F_kernelmod_dir/net/${pkgname}/${pkgname}.ko
	Fbuild_kernelmod_scriptlet
}
