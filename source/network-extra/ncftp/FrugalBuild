# Compiling Time: 0.10 SBU
# Maintainer: jercel <jercel16@gmail.com>

pkgname=ncftp
pkgver=3.2.6
pkgrel=2
pkgdesc="Console based FTP client"
url="http://www.ncftp.com/"
depends=('ncurses>=6.0-15')
groups=('network-extra')
archs=('x86_64')
up2date="lynx -dump $url/download/|grep src.tar.gz$|sed -n 's/.*-\(.*\)-.*/\1/;1 p'"
source=(ftp://ftp.ncftp.com/$pkgname/$pkgname-$pkgver-src.tar.gz)
sha1sums=('20092311d3a7495888f8cb6bc960bddee1cbeacb')

unset CPPFLAGS

build() {
	Fcd
	CPP=/usr/bin/cpp Fconf --prefix=/usr --sysconfdir=/etc
	Fmake
	make prefix="${Fdestdir}/usr" mandir="${Fdestdir}/usr/share/man" install || Fdie
}

# optimization OK
