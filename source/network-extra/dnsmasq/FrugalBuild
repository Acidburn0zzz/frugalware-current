# Last Modified: Sun, 06 Aug 2006 15:14:18 +0200
# Compiling Time: 0.02 SBU
# Maintainer: DNAku <DNAku@frugalware.org>

pkgname=dnsmasq
pkgver=2.33
pkgrel=1
pkgdesc="Dnsmasq is a lightweight, easy to configure DNS forwarder and DHCP server."
url="http://thekelleys.org.uk/dnsmasq/doc.html"
## could depend on dbus 
depends=()
archs=('i686' 'x86_64')
backup=(etc/dnsmasq.conf)
groups=('network-extra')
up2date="lynx -dump http://www.thekelleys.org.uk/dnsmasq |grep 'LATEST'|sed 's/ //g'|sed 's/.].*//g'|sed 's/.*_//g'|sed -e '/^$/d'"
source=(http://thekelleys.org.uk/dnsmasq/$pkgname-$pkgver.tar.gz \
	rc.dnsmasq dnsmasq.conf makefile.patch)
sha1sums=('a470a8ded17dee490302c53d04a5ad61b147b377' \
          'd001aa17aa8fb59e9dbfa7253f7af8514d92ada7' \
          'fd09fa99f453cf81e905e2de4da2137e8c3be3d4' \
          'c29228829f3b5e28576ace642fb4e552039c7654')

build()
{
	Fbuild
	Fexe /etc/rc.d/rc.dnsmasq
	Fexe /etc/dnsmasq.conf
	Fmkdir var/lib/misc usr/share/doc/$pkgname-$pkgver
	cp $Fsrcdir/$pkgname-$pkgver/*.html $Fdestdir/usr/share/doc/$pkgname-$pkgver
}

# optimization OK
