# description: Dnsmasq is a small DNS/DHCP server.

source /lib/initscripts/functions
TEXTDOMAIN=dnsmasq
TEXTDOMAINDIR=/lib/initscripts

actions=(restart start stop status)
daemon=$"Dnsmasq"

pid="pidof dnsmasq 2> /dev/null"

rc_start()
{
	start_msg
	if [[ "$(eval $pid)" == "" ]] ; then
		/usr/sbin/dnsmasq
		ok $?
	else
		ok 999
	fi
}

rc_stop()
{
	stop_msg
	if [[ "$eval $pid)" != "" ]] ; then
		killall dnsmasq
		ok $?
	else
		ok 999
	fi
}

rc_status()
{
        msg "$daemon are"
      	if [[ "$eval $pid)" == "" ]] ; then
                ok 997
        else
                ok 998
        fi
}
rc_exec $1

