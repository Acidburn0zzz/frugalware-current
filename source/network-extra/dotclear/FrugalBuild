# Compiling Time: 0 SBU
# Maintainer: Pingax <pingax@frugalware.fr>

pkgname=dotclear
pkgver=2.4.0_beta1
pkgrel=1
pkgdesc="Dotclear is a php-written blogging platform"
url="http://dotclear.org"
rodepends=('php' 'mysql')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://download.dotclear.org/latest/"
source=(http://download.dotclear.org/latest/$pkgname-${pkgver/_/-}.tar.gz)
sha1sums=('aeae065dee90c05eacc8d56762d5802cf652c84c')

build()
{
	Fmkdir /var/www
	Fcp $pkgname /var/www/$pkgname/
}
