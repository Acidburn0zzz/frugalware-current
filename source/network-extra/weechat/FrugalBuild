pkgname=weechat
pkgver=1.5
pkgrel=1
pkgdesc="Fast, light & extensible IRC client."
url="http://www.weechat.org"
depends=('aspell' 'gnutls>=3.4.2' 'libgcrypt>=1.6.1' 'python>=2.7' \
	'lua' 'perl' 'curl' 'ncurses>=6.0-6')
makedepends=('ruby>=2.1.2' 'intltool')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date=("Flasttar ${url}/files/src/")
_F_gnome_iconcache="y"
source=(${url}/files/src/$pkgname-$pkgver.tar.gz)
Finclude cmake
sha1sums=('d7b0341caab91b06ea6a99df9c32665ca04641ad')

build() {
	Fcd
	CMake_build
	Frm /usr/share/icons/
}
