pkgname=iwlwifi-6000-ucode
pkgver=9.221.4.1
pkgrel=1
pkgdesc="Intel 6000 Series Wi-Fi Adapters Microcode"
url="http://www.intellinuxwireless.org/"
depends=('udev')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump ${url}?n=downloads|grep iwlwifi-6000-ucode|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=(${url}/iwlwifi/downloads/${pkgname}-${pkgver}.tgz)
sha1sums=('a888cf54974702594e82bcbfca20c26d8f906e9f')

build()
{
	Fcd
	Ffilerel /lib/firmware/iwlwifi-6000-4.ucode
}
