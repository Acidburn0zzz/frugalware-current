# description: Bittorrent tracker.

source /lib/initscripts/functions
TEXTDOMAIN=bittorrent
TEXTDOMAINDIR=/lib/initscripts/messages

actions=(restart start status stop)
daemon=$"Bittorrent tracker"

pid="cat /var/run/bittorrent.pid 2>/dev/null"

rc_start()
{
	start_msg
	if [[ "$(eval $pid)" == "" ]] ; then
		bittorrent-tracker --port 6969 --dfile /var/lib/bittorrent \
			--logfile /var/log/bittorrent --pid /var/run/bittorrent.pid &
		ok $?
	else
		ok 999
	fi
}

rc_stop()
{
	stop_msg
	if [[ "$(eval $pid)" != "" ]] ; then
		kill $(eval $pid)
		rm /var/run/bittorrent.pid
		ok $?
	else
		ok 999
	fi
}

rc_exec $1
