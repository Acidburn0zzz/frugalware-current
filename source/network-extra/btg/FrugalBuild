# Compiling Time: 3.50 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=btg
pkgver=0.9.8
pkgextraver=
pkgrel=2
pkgdesc="Bittorrent client implemented in C++ and using the Rasterbar Libtorrent library."
Finclude berlios
depends=('libboost-mt>=1.35.0' 'libtorrent-rasterbar>=0.13.1' 'gnutls' 'dialog')
makedepends=('boost>=1.35.0' 'asio')
groups=('network-extra')
archs=('i686' 'x86_64')
sha1sums=('07af091edf11a2fdaf95ef6f4242342ee7ca5468')

build()
{
	Fcd $pkgname-$pkgver
	Fsed 'libtorrent >= 0.12' 'libtorrent-rasterbar >= 0.13' m4/btg_rblibtorrent_check.m4
	sh autogen.sh || return 1
	Fbuild \
		--with-boost-iostreams=mt \
		--with-boost-filesystem=mt \
		--with-boost-date-time=mt \
		--with-boost-thread=mt \
		--with-boost-program-options=mt \
		--enable-cli \
		--enable-www \
		--enable-session-saving \
		--enable-upnp \
		--enable-event-callback \
		--with-rblibtorrent=/usr
}

# optimization OK
