# description:  Starts and stops ufw firewall system

source /lib/initscripts/functions

TEXTDOMAIN=ufw
TEXTDOMAINDIR=/lib/initscripts/messages
source /lib/initscripts/functions
daemon=$"ufw firewall"

actions=(start stop status)

rc_start()
{
	start_msg
	/usr/sbin/ufw enable -- 
	ok $?
}

rc_stop()
{
	stop_msg
	/usr/sbin/ufw disable --
	ok $?
}

rc_status()
{
	/usr/sbin/ufw status
	ok $?
}
 
rc_exec $1
