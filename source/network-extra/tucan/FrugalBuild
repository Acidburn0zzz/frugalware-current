# Compiling time: 0.0 SBU
# Maintainer: Cedrick Hannier alias Cedynamix <cedynamix@gmail.com>

pkgname=tucan
pkgver=0.3.9
pkgrel=1
pkgdesc="Download and upload manager for hosting sites."
archs=('i686' 'x86_64')
url="http://tucaneando.com/index.html"
groups=('network-extra')
depends=('pygtk' 'imaging' 'tesseract-ocr' 'librsvg')
 _F_googlecode_dirname="build-tucan-doc"
Finclude googlecode
sha1sums=('c2aa4447a6a802c975b218815648536814ea2ae4')

build() {
	Fcd
	Fmakeinstall
	Fln /usr/share/tucan/tucan.py /usr/bin/tucan
	Fmv share usr
	Frm bin
}

# optimization OK
