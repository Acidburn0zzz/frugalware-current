# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=bilboplanet
pkgver=0.2
pkgrel=1
pkgdesc="BilboPlanet's project is A Rss feed agregator free software write in PHP."
url="http://www.bilboplanet.org"
depends=('mysql' 'php')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/downloads/"
source=($url/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('2a1d84b10c7c6ee4233e13578e80eb0b2bc7957f')

build()
{
	Fmkdir /{var/www,usr/share/doc/$pkgname-$pkgver}
	Fdoc $pkgname-$pkgver/LICENSE.txt
	Fdoc $pkgname-$pkgver/INSTALL.txt
	Fmv ../src/$pkgname-$pkgver /var/www/$pkgname
}

