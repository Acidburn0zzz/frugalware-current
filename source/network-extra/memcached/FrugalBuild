# Compiling Time: 0.01 SBU
# Maintainer: CSÉCSY László <boobaa@frugalware.org>

pkgname=memcached
pkgver=1.4.2
pkgrel=1
pkgdesc="A high-performance, distributed memory object caching system."
url="http://www.danga.com/memcached/"
depends=('libevent')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump ${url}download.bml | Flasttar"
source=(http://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz memcached rc.memcached)
backup=(etc/sysconfig/memcached)
sha1sums=('28bceaa24c4bc6d7dc9c700e143ee4b2ff09f760' \
          'a870f1229b48f0de9ce73143d34d7be89f405a62' \
          '38e9794f2f9addc5b25d118b1d370f663c4b9f95')

build() {
	Fbuild
	Ffile /etc/sysconfig/memcached
}

# optimization OK
