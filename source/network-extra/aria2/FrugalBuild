# Compiling Time: 0.43 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=aria2
_F_archive_name="${pkgname}c"
pkgver=0.15.2
pkgrel=1
pkgdesc="aria2 is an utility for downloading files."
depends=('openssl' 'libstdc++' 'cppunit' 'c-ares>=1.5.1')
makedepends=('cvs' 'gnutls')
license="GPL"
groups=('network-extra')
archs=('i686' 'x86_64')
_F_sourceforge_name="${pkgname}c" # huh ?:)
_F_sourceforge_dirname="$pkgname"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('8d1da44d68a5f8772434fdd29041dcb57747d0fa')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake --without-gnutls
	Fmakeinstall
}

# optimization OK
