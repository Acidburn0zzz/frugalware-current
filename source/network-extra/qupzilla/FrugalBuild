# Compiling Time: 2.90 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=qupzilla
pkgver=1.1.0.gaff7f77
pkgrel=1
pkgdesc="A new and very fast open source browser based on WebKit core, written in Qt Framework."
url="https://github.com/nowrep/QupZilla"
depends=('libqtwebkit' 'libqtscript' 'libqtsql' 'bzip2')
groups=('network-extra')
archs=('i686' 'x86_64')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_scm_type="git"
_F_scm_url="git://github.com/nowrep/QupZilla.git"
_F_scm_tag="v1.1.0"
_F_cd_path="nowrep-QupZilla-aff7f77"
Finclude scm gnome-scriptlet

build() {
	Funpack_scm
	Fcd
	qmake || Fdie
	Fmake
	Fmakeinstall INSTALL_ROOT="$Fdestdir"
	Fbuild_gnome_scriptlet
}

# optimization OK
