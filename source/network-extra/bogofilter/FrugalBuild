# Compiling Time: 0.15 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=bogofilter
pkgver=1.0.3
pkgrel=2
pkgdesc="A very fast Bayesian spam filtering tool"
url="http://bogofilter.sourceforge.net/"
license="GPL2"
Finclude sourceforge
depends=('glibc' 'db>=4.5.20')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/projects/bogofilter/ | grep -m1 'stable' | sed 's/.*r \(.*\) -.*/\1/'"
sha1sums=('58b6ad44251af217b62cc49310d5597b97aa6bc3')
backup=(etc/bogofilter.cf)

build()
{
	Fbuild --localstatedir=/var --enable-transactions
	Fmv /etc/bogofilter.cf.example /etc/bogofilter.cf
	Fdocrel bogofilter.cf.example GETTING.STARTED
	Fdocrel doc/*.html doc/README.*
	Fdocrel contrib/*.example contrib/README.*
	for i in contrib/*.pl contrib/*.sh ; do
	Fexerel $i /usr/bin/`basename $i`
	done
}

# optimization OK
