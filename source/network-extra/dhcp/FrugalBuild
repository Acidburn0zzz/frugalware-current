pkgname=dhcp
pkgver=4.3.6
pkgextraver=
pkgrel=1
pkgdesc="The ISC DHCP server"
url="http://www.isc.org/software/dhcp/"
depends=('glibc>=2.25' 'iproute2>=4.10.0-2')
makedepends=('groff')
groups=('network-extra')
archs=('x86_64')
backup=('etc/dhcpd.conf' 'etc/dhcpd-dhcpv6.conf')
up2date="lynx -dump http://www.isc.org/downloads | grep -a -m1 'dhcp-4.\([0-9].[0-9]\).tar.gz.' | sed 's/.*dhcp-\(.*\).tar.gz.asc/\1/'|Fsanitizeversion"
source=(ftp://ftp.isc.org/isc/$pkgname/${pkgver}${pkgextraver}/$pkgname-${pkgver}${pkgextraver}.tar.gz \
	README.Frugalware \
	dhclient.conf \
	dhcpd.service \
	dhclient@.service \
	dhclient6@.service \
	dhcpd6.service)
sha1sums=('fb0417530e49368fe032cd9722f51c74f93180ac' \
          '0510d9057df9dcf1c476961930f0ac65f7de87f9' \
          'b905bf424af0d521fbfc66ad2a216358226845ba' \
          '5aad78d4a62feb3c6273575451533bb122d7af3a' \
          '651e935121f8d1763b4d9bbdd9a229ef14aab43f' \
          '12092945c0b9392adfa5a8cfe85efb694ce55463' \
          '239f0682a5217b9590a1a090106dcfb3655aad3d')


subpkgs=('dhclient')
subdescs=('The ISC DHCP client')
subgroups=('network-extra')
subdepends=('glibc>=2.25 iproute2')
subbackup=('etc/dhclient.conf etc/dhclient-dhcpv6.conf')
subarchs=('x86_64')

options+=('static')

## TODO: dhcrelay support/service
## add 'better' conf file(s)
## add some sort /etc/dhcp.d/<config_file>

_F_systemd_units=(dhcpd= dhcpd6= dhclient@= dhclient6@=)
Finclude systemd

DIRS='client common dhcpctl dst minires server omapip relay'

build()
{
	Fcd
	Fpatchall

	_F_make_opts="-j1"
	Fmake \
		--prefix=/usr \
		--sysconfdir=/etc  \
		--enable-dhcpv6 \
		--with-srv-lease-file=/var/state/dhcp/dhcpd.leases \
		--with-srv-pid-file=/run/dhcpd.pid \
		--with-srv6-lease-file=/var/state/dhcp/dhcpd6.leases \
		--with-srv-pid-file=/run/dhcpd6.pid \
		--with-cli-lease-file=/var/state/dhclient/dhclient.leases \
		--with-cli-pid-file=/run/dhclient.pid \
		--with-cli6-lease-file=/var/state/dhclient/dhclient6.leases \
		--with-cli6-pid-file=/run/dhclient6.pid

	Fmakeinstall
	Fmkdir lib/systemd/system
	Ffile /lib/systemd/system/dhcpd.service
	Ffile /lib/systemd/system/dhcpd6.service
	## use @services here since we can have multiple interfaces
	Ffile /lib/systemd/system/"dhclient@.service"
	Ffile /lib/systemd/system/"dhclient6@.service"
	Fgenscriptlet

	## some cof mess
	Fsed "/usr/local/var/db" "/var/state/dhcp" doc/examples/dhcpd-dhcpv6.conf
	Fsed "/usr/local/etc" "/sbin" doc/examples/dhclient-dhcpv6.conf
	Ffile $pkgname-${pkgver}${pkgextraver}/server/dhcpd.conf.example /etc/dhcpd.conf
	Ffile $pkgname-${pkgver}${pkgextraver}/doc/examples/dhcpd-dhcpv6.conf /etc/dhcpd-dhcpv6.conf
	Ffile $pkgname-${pkgver}${pkgextraver}/doc/examples/dhclient-dhcpv6.conf /etc/dhclient-dhcpv6.conf
	Ffile /etc/dhclient.conf

	## we never instlled it .. not sure how that ever worked ?
	Finstall 755 $pkgname-${pkgver}${pkgextraver}/client/scripts/linux /sbin/dhclient-script

	Fmkdir var/state/{dhcp,dhclient}
	touch $Fdestdir/var/state/dhcp/dhcpd{,6}.leases
	touch $Fdestdir/var/state/dhclient/dhclient{,6}.leases
	Fdoc README.Frugalware
	## FIXME: what for ?
	Fmkdir var/lib/dhclient

	# Split out dhclient
	Fsplit dhclient usr/share/man/man{5,8}/dhclient*
	Fsplit dhclient var/lib/dhclient
	Fsplit dhclient usr/sbin/dhclient*
	Fsplit dhclient etc/dhclient{,-dhcpv6}.conf
	Fsplit dhclient var/state/dhclient
	## FIXME: the script sucks
	Fsplit dhclient sbin/dhclient-script
	Fsplit dhclient lib/systemd/system/dhclient{,6}@.service

}

# optimization OK
