# Compiling Time: 0.92 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=kismet
pkgver=2006_04_R1
origver=`echo $pkgver|sed 's/_/-/g'`
pkgrel=1
pkgdesc="IEEE 802.11 wireless LAN sniffer"
url="http://www.kismetwireless.net/"
depends=('wireless_tools' 'libstdc++' 'ncurses')
groups=('network-extra')
backup=(etc/kismet{,_drone,_ui}.conf)
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download.shtml |grep 'Latest stable'|sed 's/.*t-\([^ ]*\) .*/\1/;s/-/_/g'"
source=($url/code/$pkgname-$origver.tar.gz)

build()
{
	Fcd $pkgname-$origver
	Fconf
	make dep && make || return 1
	Fmakeinstall
}
sha1sums=('e48ce08e96328bfdac98152df6b5759c27ed9169')

# optimization OK
