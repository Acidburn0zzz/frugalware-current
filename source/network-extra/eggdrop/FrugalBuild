# Compiling Time: 0.29 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=eggdrop
pkgver=1.6.19
pkgextraver="+ctcpfix"
pkgrel=2
pkgdesc="Eggdrop is an IPv6 capable IRC bot"
url="http://www.eggheads.org"
depends=('tcl' 'zlib')
groups=('network-extra')
archs=('i686' 'x86_64')
Fpkgversep=""
up2date="lynx -dump $url/downloads/ | Flasttar"
source=(ftp://ftp.eggheads.org/pub/$pkgname/source/1.6/$pkgname$pkgver$pkgextraver.tar.bz2 fix_Thread.diff)
_F_cd_path="$pkgname$pkgver"
sha1sums=('d23e66c048b32bf1ea2f0c1a294b3f9131ded4fc' \
          '1d7934e6880ae1bf89b78b568e5ba475d6a06413')

build() {
	Fcd
	Fmkdir usr/share/$pkgname
	Fpatchall
	./configure --prefix=/usr/share/$pkgname  || Fdie
	make config || Fdie
	Fmake
	make DEST=$Fdestdir/usr/share/$pkgname install  || Fdie
}

# optimization OK

