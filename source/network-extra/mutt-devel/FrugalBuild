# Compiling Time: 1.91 SBU
# Contributor: Janny <janny@frugalware.org>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=mutt-devel
origname=mutt
pkgver=1.5.13
pkgrel=1
pkgdesc="A small but very powerful text-based mail client development release."
url="http://www.mutt.org/"
license="GPL"
groups=('network-extra')
archs=('i686' 'x86_64')
depends=('openssl' 'gdbm' 'libidn' 'gpgme' 'ncurses')
makedepends=('tetex')
conflicts=('mutt' 'mutt-ng')
backup=(etc/Muttrc)
up2date="lynx -dump http://mutt.org/download.html |grep tar |sed -ne 's/.*-\(.*\).t.*/\1/;2p'"
source=(ftp://ftp.mutt.org/$origname/devel/$origname-${pkgver}.tar.gz SA22613.patch)

build() 
{
	cd $Fsrcdir/$origname-$pkgver/
	if [ ! -x ./configure ]; then
	  ./prepare
	fi &&
	Fbuild --enable-gpgme --enable-pgp --enable-pop --enable-imap \
	--with-ssl --enable-flock --enable-inodesort --enable-buffy-size \
	--enable-hcache --enable-nfs-fix --with-docdir=/usr/share/doc/$pkgname-$pkgver
}
sha1sums=('6d5b88d33e1727bf0342c31f06d55d7a3d2d4e0a' \
	  'b0bd9c4e83813d1ecac35a7d284e9ee4c48335e5')

# optimization OK
