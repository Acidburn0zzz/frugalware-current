pkgname=ntop
pkgver=3.2
pkgrel=1
pkgdesc="A network traffic probe that shows the network usage"
url="http://www.ntop.org"
depends=('openssl' 'gd' 'gdbm' 'glib' 'libxml2' 'libpcap')
groups=('network-extra')
archs=('i686')
_F_sourceforge_ext=.tgz
Finclude sourceforge
sha1sums=('ab17e871890bc490746fe03f171523073b54e1e8')

build() {
	Fbuild
	Fmkdir var/
	install -d -m755 --owner=nobody --group=nobody $Fdestdir/var/ntop
}

# optimization OK
