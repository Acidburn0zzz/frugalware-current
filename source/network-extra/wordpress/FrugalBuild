# Compiling Time: ~0.01 SBU
# Maintainer: CSÉCSY László <boobaa@frugalware.org>

pkgname=wordpress
pkgver=2.1.1
pkgrel=1
pkgdesc="a state-of-the-art semantic personal publishing platform"
url="http://wordpress.org/"
rodepends=('php>=4.1' 'mysql>=4.0')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://wordpress.org/download/release-archive/|grep tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/'|Fsort|sed -n '$ p'"
source=(http://$pkgname.org/$pkgname-$pkgver.tar.gz)
options=('nobuild')

build()
{
	Fmkdir /{var/www,usr/share/doc/$pkgname-$pkgver}
	Fmv ../src/$pkgname/license.txt /usr/share/doc/$pkgname-$pkgver/
	Fmv ../src/$pkgname/readme.html /usr/share/doc/$pkgname-$pkgver/
	Fmv ../src/$pkgname /var/www/$pkgname
}
# optimization OK - noarch
sha1sums=('c0742f0435a5e33ab6206cb899016867431e860d')
