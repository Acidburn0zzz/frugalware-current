pkgname=indicator-sound
pkgver=0.7.9.0
pkgrel=1
pkgdesc="A unified sound menu"
depends=('pulseaudio>=0.9.23' 'libdbusmenu-gtk>=0.5' 'libindicator>=0.4' 'dconf' 'libuuid' \
    'ido>=0.2.0' 'libindicate>=0.6' 'libgee' 'glib2>=2.28.1-2' 'libnotify>=0.7.1')
makedepends=('intltool'  'vala' 'gconf')
groups=('ayatana-extra')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
_F_launchpad_branch="fourth"
_F_launchpad_subdir="0.7.9"
Finclude launchpad gnome-scriptlet
sha1sums=('4155a1c888e3d12309399a58bb99ca76a2027180')

build() {
   Fcd
   export CFLAGS="$CFLAGS -I/usr/include/gio-unix-2.0"
   Fbuild
   Fbuild_gnome_scriptlet
}

