# Compiling Time: 0 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=gnustep-make
pkgver=2.6.0
pkgrel=1
pkgdesc="The GNUstep make utilities"
Finclude gnustep
makedepends=()
depends=()
groups=(${groups[@]} 'gnustep-core')
archs=('i686' 'x86_64')
sha1sums=('e3cd5dd9d1f0314c66e6e45b5e5bf9b2513f9be4')

build()
{
	Fgnustep_build
	Fmkdir /etc/profile.d/
	Finstallrel 755 $Fdestdir/$Fprefix/System/Library/Makefiles/GNUstep.sh \
		/etc/profile.d/
	Fmkdir /usr/share
	Fmv ${_F_GNUSTEP_SYSTEM}/Documentation/man /usr/share/
}

