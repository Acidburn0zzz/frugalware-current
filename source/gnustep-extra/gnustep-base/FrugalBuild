# Compiling Time: 0.13 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=gnustep-base
pkgver=1.20.1
pkgrel=3
pkgdesc="The GNUstep Base"
Finclude gnustep
depends=(${depends[@]} 'ffcall' 'gmp>=5.0.1' 'libxslt' 'openssl>=1.0.0' 'avahi>=0.6.25-2')
groups=(${groups[@]} 'gnustep-core')
archs=('i686' 'x86_64')
sha1sums=('5aff36405aa712473d51877ab77156d231297744')
_F_conf_notry="docdir"

build()
{
	Fpatchall
	Fgnustep_build
	# move the man-pages to the right location
	Fmkdir /usr/share/man
	Fmv ${_F_GNUSTEP_LOCAL}/Documentation/man/man1 /usr/share/man
}

# optimization OK
