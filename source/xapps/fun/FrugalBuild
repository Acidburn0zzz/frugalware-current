pkgname=fun
pkgver=0.3.2
pkgrel=6
pkgdesc="Frugalware Update Notifier (FUN)"
url="http://ftp.frugalware.org/pub/other/fun"
rodepends=('gfpm>=1.2.1')
depends=('glib2' 'gtk+2>=2.20.1' 'libglade' 'pacman-g2' 'frugalwareutils' 'dbus' \
	'dbus-glib>=0.80' 'libnotify' 'libnxml' 'openssl>=1.0.0')
makedepends=('pkgconfig' 'intltool')
groups=('xapps')
archs=('i686' 'x86_64' 'ppc')
options=('genscriptlet')
_F_gnome_iconcache="y"
Finclude gnome-scriptlet
up2date="lynx -dump $url | Flasttar"
source=($url/$pkgname-$pkgver.tar.gz rc.fun $pkgname-$pkgver-cfgdialog-destroy-fix.diff \
	$pkgname-$pkgver-uifreeze.diff)
signatures=(${source[0]}.asc '' '' '')

build()
{
	Fbuild
	Fbuild_gnome_scriptlet
	Frcd2
}

# optimization OK
