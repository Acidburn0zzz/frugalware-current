pkgname=firefox-useragentswitcher
extname=useragentswitcher
extid=e968fc70-8f95-4ab9-9e79-304de2a71ee1
pkgver=0.6.8
pkgrel=2
pkgdesc="Adds a menu and a toolbar button to switch the user agent of the browser."
url="http://chrispederick.com/work/firefox/useragentswitcher/"
rodepends=('firefox>=1.5')
groups=('xapps-extra' 'firefox-extensions')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/update_localized.rdf |grep :version|sed -n 's/.*>\(.*\)<.*/\1/;1 p'"
source=($url/${extname}_localized.xpi chrome.manifest)
sha1sums=('6416cbe7e1e1402235edfadbe0a2fcf33e3b1feb' \
	  'c117f7326843cc7db46adf80a8c2fa203cfe6a1c')

Finclude firefox-extension

build()
{
	mv ${extname}_localized.xpi $extname-$pkgver.xpi
	Fxpiinstall
}
