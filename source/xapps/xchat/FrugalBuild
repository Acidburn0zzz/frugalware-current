pkgname=xchat
pkgver=2.4.3
pkgrel=2
pkgdesc="A GTK+2 based IRC client"
url="http://www.xchat.org/"
depends=('gtk+2' 'openssl')
groups=('xapps')
archs=('i686')
up2date="lynx -dump $url|grep Source|sed 's/.* \([0-9\.]*\)$/\1/'"
source=(http://www.xchat.org/files/source/`echo $pkgver|sed 's/\([0-9].[0-9]\).[0-9]/\1/'`/$pkgname-$pkgver.tar.bz2)
md5sums=('bdcb196b70c93a185fff485fe9af9815')

build()
{
	Fbuild --localstatedir=/var/lib --enable-ipv6 --disable-tcl || return 1
}

# optimalization ok

