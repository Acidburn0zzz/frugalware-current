pkgname=xchat
pkgver=2.4.5
pkgrel=1
pkgdesc="A GTK+2 based IRC client"
url="http://www.xchat.org/"
depends=('gtk+2' 'openssl')
makedepends=('python' 'perl')
groups=('xapps')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep Source|sed 's/.* \([0-9\.]*\)$/\1/'"
source=(http://www.xchat.org/files/source/`echo $pkgver|sed 's/\([0-9].[0-9]\).[0-9]/\1/'`/$pkgname-$pkgver.tar.bz2 \
	$pkgname-$pkgver-fw.diff)
sha1sums=('e027a20caa47b4ffea00896ee68269a7ae885e2d' \
	  '2bb2ee271fc1c56c7eede8a48dcccd43c47a2355')

build()
{
	Fbuild --localstatedir=/var/lib --enable-ipv6 --disable-tcl
	# Needed for plugin development
	Ffilerel src/common/xchat-plugin.h /usr/include/xchat/xchat-plugin.h
}

# optimalization ok

