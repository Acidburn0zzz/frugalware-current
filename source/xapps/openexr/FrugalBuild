pkgname=openexr
pkgver=1.2.2
realname=OpenEXR
pkgrel=2
pkgdesc="OpenEXR is a high dynamic-range (HDR) image file format."
url="http://www.openexr.com"
depends=('fltk')
groups=('xapps')
archs=('i686' 'x86_64')
_F_cd_path="OpenEXR-$pkgver"
up2date="lynx -dump $url/downloads.html|grep source|sed 's/.* \([0-9\.]*\) .*/\1/;q'"
source=(http://savannah.nongnu.org/download/$pkgname/$realname-$pkgver.tar.gz $pkgname-$pkgver-gcc4.patch)
sha1sums=('8ee37cd2a95b8561a4c850cc35781dec87b77bbf' \
          'ac7d7b9f660c161d110e320d95eb46879d422971')
Fconfopts="$Fconfopts --disable-dependency-tracking --with-gnu-ld"

