pkgname=openexr
pkgver=1.4.0a
pkgrel=1
pkgdesc="OpenEXR is a high dynamic-range (HDR) image file format."
url="http://www.openexr.com"
depends=('fltk')
groups=('xapps')
archs=('i686' 'x86_64')
_F_cd_path="$pkgname-${pkgver//a/}"
up2date="lynx -dump 'http://savannah.nongnu.org/download/openexr/?C=M;O=A'|grep openexr | grep -v images| Flasttar"
source=(http://savannah.nongnu.org/download/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-1.2.2-gcc4.patch)
sha1sums=('d7f2188b677ea28cafb104f2ace6c0f50b5aadee' \
	  'ac7d7b9f660c161d110e320d95eb46879d422971')
Fconfopts="$Fconfopts --disable-dependency-tracking --with-gnu-ld"

# optimization OK
