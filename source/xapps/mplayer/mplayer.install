# arg 1:  the new package version
post_install() {
	cd /usr/share/mplayer
	rm -rf font
	ln -s font-arial-24-$CHARSET font
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
	/bin/true
}

# arg 1:  the old package version
pre_remove() {

	/bin/true
}

# arg 1:  the old package version
post_remove() {
	cd /usr/share/mplayer
	rm -rf font
}

op=$1
shift
$op $*
