pkgname=fontforge
pkgver=20050310
pkgrel=1
pkgdesc="Font editor and converter"
url="http://fontforge.sourceforge.net"
depends=('libuninameslist' 'x')
groups=('xapps')
source=("$url"/"$pkgname"_full-"$pkgver".tgz "$url"/cidmaps.tgz)
up2date=`wget --passive-ftp -O - -q http://fontforge.sourceforge.net | grep 'fontforge_full-[0-9]*.tgz.*source tree' | sed "s/.*fontforge_full-\([0-9\.]*\).tgz.*/\1/"`

build() {
	Fcd
	mkdir -p cidmap && cp ../*.cidmap cidmap/
	Fbuild --without-freetype-src --with-multilayer
}

md5sums=('55787a2c60fd84599d316e0311bcb3ae' '62c2d6ca915c3231bddd352f6d393d7b')
