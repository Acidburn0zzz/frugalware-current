# Last modified: Sun, 04 Sep 2005 19:40:47 +0200
# Compiling time: 0.46 SBU
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=fontforge
pkgver=20050831
pkgrel=1
pkgdesc="Font editor and converter"
url="http://fontforge.sourceforge.net"
depends=('libuninameslist' 'x')
groups=('xapps')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep _full.*tar.bz2$|sed 's/.*-\(.*\)\.t.*/\1/'"
source=("$url"/"$pkgname"_full-"$pkgver".tar.bz2 "$url"/cidmaps.tgz)
sha1sums=('faebabee8b6d5ea79c5e82348b97d556455b15bd' \
          'd111db1f6d9a05cf6cb1387c2fb2eeb21ba0279a')

build() {
	Fcd
	mkdir -p cidmap && cp ../*.cidmap cidmap/
	Fbuild --without-freetype-src --with-multilayer
}

# optimalization OK

