pkgname=netpbm
pkgver=10.27
pkgrel=1
pkgdesc="A toolkit for manipulation of graphic images"
groups=('xapps')
depends=('perl' 'libjpeg' 'libpng' 'libtiff')
url="http://netpbm.sourceforge.net/"
up2date=`lynx -dump http://sourceforge.net/projects/netpbm|grep -1 Version|sed -n -e 's/.*]\([0-9\.]*\) [A-Z].*/\1/' -e '3 p'`
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tgz config)
md5sums=('c5efd105d1b7fb4685f60a39b230e880' 'a601e75895064ffb5cc4904a7f19390d')

build()
{
	Fcd
	cp $Fsrcdir/config Makefile.config
	sed -i "s/^\(CFLAGS =\) .*/\1 $CFLAGS/" Makefile.config
	sed -i 's/\(.*\$(SYMLINK) \)\(pnmtopnm\)\(\$(EXE) \)\(pamtopnm\)/\1\4\3\2/' converter/other/Makefile

	make || return 1
	
	make package pkgdir=$Fdestdir/usr
	Frm /usr/{link,README,pkginfo,misc,VERSION,config_template}
}

# vim: ft=sh
