pkgname=gservice
pkgver=0.1.2
pkgrel=2
pkgdesc="gService is a GUI runlevel editor for Frugalware linux."
url="http://ftp.frugalware.org/pub/other/gservice"
rodepends=('chkconfig' 'frugalware')
depends=('gtk+2>=2.20.1')
makedepends=('pkgconfig' 'intltool')
groups=('xapps')
archs=('i686' 'x86_64')
backup=('etc/gservice/main.conf')
replaces=('frugalrledit')
options=('genscriptlet' 'scriptlet')
_F_gnome_iconcache="y"
Finclude gnome-scriptlet
up2date="lynx -dump $url | Flasttar"
source=($url/$pkgname-$pkgver.tar.gz)
signatures=(${source[0]}.asc)

