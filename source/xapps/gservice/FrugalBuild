# Compiling Time: 0.06 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=gservice
pkgver=0.1.0
pkgrel=3
pkgdesc="gService is a GUI runlevel editor for Frugalware linux."
url="http://ftp.frugalware.org/pub/other/gservice"
rodepends=('chkconfig' 'frugalware')
depends=('gtk+2>=2.14.7' 'libglade')
makedepends=('pkgconfig' 'intltool')
groups=('xapps')
archs=('i686' 'x86_64')
backup=('/etc/main.conf')
replaces=('frugalrledit')
options=('genscriptlet' 'scriptlet')
_F_gnome_iconcache="y"
Finclude gnome-scriptlet
up2date="lynx -dump $url | Flasttar"
source=($url/$pkgname-$pkgver.tar.gz $pkgname-$pkgver-segfaultfix.diff \
	$pkgname-$pkgver-kdemenu.patch)
signatures=(${source[0]}.asc '' '')

build()
{
	Fcd
	Fpatchall
	Fautoconfize
	libtoolize || Fdie
	Fmake
	Fmakeinstall
	Fbuild_gnome_scriptlet
}

# optimization OK
