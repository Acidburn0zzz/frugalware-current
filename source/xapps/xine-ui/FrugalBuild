# Compiling Time: ~5 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=xine-ui
pkgver=0.99.2
pkgrel=1
pkgdesc="Xine multimedia playback engine user interface"
url="http://www.xinehq.de/"
depends=('xine-lib' 'pkgconfig' 'curl')
up2date=`lynx -dump http://xinehq.de/index.php/releases|grep xine-ui-.*tar.gz|sed -n -e 's/.*i-\(.*\)\.tar\.gz$/\1/' -e '1 p'`
source=(http://dl.sourceforge.net/sourceforge/xine/$pkgname-$pkgver.tar.gz)
md5sums=('4a4cf5cc68bf65e6845f501ea87fdf94')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
