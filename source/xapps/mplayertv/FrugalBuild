pkgname=mplayertv
pkgver=0.2.1pre7
pkgrel=1
pkgdesc="You can watch TV with mplayerTV under Linux (v4l, v4l2) (uses MPlayer)"
url="http://mplayertv.zer0.hu/"
depends=('perl-gtk2')
groups=('xapps-extra')
archs=('i686')
# no stable releases yet
up2date="lynx -dump $url|grep Devel|sed 's/.*: \(.*\)/\1/'"
source=($url/downloads/mplayerTV-$pkgver.tar.gz)
sha1sums=('1b9e6d3f123678119cbc6926a10296f3668a78b8')

build()
{
	Fcd mplayerTV-$pkgver
	Fexerel /usr/bin/mplayerTV
	Fln mplayerTV /usr/bin/mplayerTVw

	# perl module
	cd MPlayer-0.04
	perl Makefile.PL
	make || return 1
	make test
	Fmakeinstall
	Fmv '/usr/lib/perl5/site_perl/?.?.?' \
		/usr/lib/perl5/site_perl/current
	Frm /usr/lib/perl5/?.?.?
	find $Fdestdir/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# vim: ft=sh
