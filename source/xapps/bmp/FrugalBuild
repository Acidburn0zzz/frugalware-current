# Last Modified: Sun, 12 Dec 2004 11:10:37 +0100
# Compiling Time: ~2 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=bmp
pkgver=0.9.7
pkgrel=1
pkgdesc="Beep Media Player"
url="http://www.sosdg.org/~larne/w/BMP_Homepage"
depends=('gtk+2' 'libvorbis' 'esd' 'alsa-lib' 'expat' 'id3lib' 'libglade')
up2date=`lynx -dump 'http://prdownloads.sourceforge.net/beepmp/?sort_by=date&sort=desc'|grep .tar.gz$|sed -ne 's/.*p-\(.*\)\.t.*/\1/;1 p'`
source=(http://dl.sourceforge.net/sourceforge/beepmp/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-hu.patch)
md5sums=('5d74113f5de3d11a400d1d6c118d41c0' \
	'35874cede9b015cad6c25f5f3a65b4a3')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/$pkgname-$pkgver-hu.patch
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
	mv $startdir/pkg/usr/share/icons $startdir/pkg/usr/share/pixmaps
}

# vim: ft=sh
