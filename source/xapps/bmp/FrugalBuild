pkgname=bmp
pkgver=0.9.7.1
pkgrel=1
pkgdesc="Beep Media Player"
url="http://www.sosdg.org/~larne/w/BMP_Homepage"
depends=('gtk+2' 'libvorbis' 'esd' 'alsa-lib' 'expat' 'id3lib' 'libglade')
groups=('xapps')
archs=('i686' 'x86_64')
provides=('songplayer')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/beepmp/?sort_by=date&sort=desc'|grep .tar.gz$|sed -ne 's/.*p-\(.*\)\.t.*/\1/;1 p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/beepmp/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-hu.patch)
sha1sums=('ab6444b9a35a8bb8e920a781e72d963a3fb60547' \
	  '21f6d4aeae393e6a6c7e2cba2fa94e0c769b9d51')

[ "$CARCH" == "x86_64" ] && Fconfopts="$Fconfopts --disable-simd"

