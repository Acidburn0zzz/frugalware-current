pkgname=bmp
realname=beepmp
pkgver=0.9.7.1
pkgrel=1
pkgdesc="Beep Media Player"
depends=('gtk+2' 'libvorbis' 'esd' 'alsa-lib' 'expat' 'id3lib' 'libglade')
groups=('xapps')
archs=('i686' 'x86_64')
provides=('songplayer')
url="http://sourceforge.net/projects/$realname"
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=\$(lynx -dump $url|grep showfiles|sed 's/.*=\(.*\)/\1/;q')|grep 'Release Notes'|grep $pkgname|sed 's/[^]]*][^]]*]\([^ ]*\) .*/\1/;q'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$realname/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-hu.patch)
sha1sums=('ab6444b9a35a8bb8e920a781e72d963a3fb60547' \
	  '21f6d4aeae393e6a6c7e2cba2fa94e0c769b9d51')

if [ "$CARCH" == "x86_64" ]; then Fconfopts="$Fconfopts --disable-simd"; fi

