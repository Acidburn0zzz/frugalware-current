post_install() {
	/usr/lib/firefox/firefox-rebuild-databases.pl
	export HOME="/root"
	firefox -register
	update-desktop-database > /dev/null 2>&1
}

post_upgrade() {
	post_install $1
}

post_remove() {
	if [ -d /usr/lib/firefox-1.0.1 ]; then
		rm -r /usr/lib/firefox-1.0.1
	fi
	update-desktop-database > /dev/null 2>&1
}

op=$1
shift

$op $*
