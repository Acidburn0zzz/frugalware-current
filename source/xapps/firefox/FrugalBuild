build() {
	Fcd mozilla
	sed "s/-march=i686 -O2 -pipe/$CFLAGS/" $startdir/src/config > .mozconfig
	export MOZ_PHOENIX=1
	Fpatchall || return 1

	make -f client.mk build || return 1
	make || return 1

	Fmkdir /usr
	Fmakeinstall

	# Compatibility.
	Fln firefox-$pkgver /usr/include/firefox
	Fln firefox-$pkgver /usr/lib/firefox
	Fln firefox-$pkgver /usr/share/idl/firefox

	# Plugins.
	Fmv /usr/lib/firefox/plugins /usr/lib/firefox/plugins.orig
	Fln /usr/lib/mozilla/plugins /usr/lib/firefox/plugins

	# /usr/share/aclocal/nspr.m4 conflicts with mozilla.
	Frm /usr/share/aclocal

	# Install ffremote.
	Fexe ffremote /usr/bin/ffremote

	# Install firefox-rebuild-databases.pl.
	sed "s/VERSION/$pkgver/" $startdir/src/firefox-rebuild-databases.pl > \
		$startdir/pkg/usr/lib/firefox-$pkgver/firefox-rebuild-databases.pl
	chmod 755 $Fdestdir/usr/lib/firefox-$pkgver/firefox-rebuild-databases.pl

	# Install generate-chrome.sh.
	Fexe generate-chrome.sh \
		/usr/lib/firefox-$pkgver/chrome/rc.d/generate-chrome.sh

	# http://frugalware.org/ is the default homepage.
	Ffile browserconfig.properties \
		/usr/lib/firefox-$pkgver/browserconfig.properties

	# Install icon for the menu file.
	Ffile $pkgname.png /usr/share/pixmaps/$pkgname.png

	# Install GNOME menu file.
	Ffile $pkgname.desktop /usr/share/applications/$pkgname.desktop

	# Install KDE menu file.
	Ffile mozilla-firefox.desktop \
		/usr/share/applnk/Internet/mozilla-firefox.desktop
}

# optimalization OK

