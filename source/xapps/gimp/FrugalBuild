# Compiling time: ~3.52 SBU
# Maintainer: VMiklos <mamajom@axelero.hu>
# Modified by: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gimp
pkgver=2.2.8
pkgrel=1
pkgdesc="The GNU Image Manipulation Program"
url="http://www.gimp.org/"
depends=('librsvg' 'libmng' 'libexif' 'alsa-lib' 'libgtkhtml' \
	'desktop-file-utils' 'gimp-print' 'lcms')
groups=('xapps')
archs=('i686' 'x86_64')
makedepends=('gimp-print')
install=$pkgname.install
up2date="lynx -dump $url/downloads/|grep tar.bz2|sed 's/.*-\(.*\)\.t.*/\1/'"
source=(ftp://ftp.gimp.org/pub/gimp/v2.2/$pkgname-$pkgver.tar.bz2 \
	$pkgname-$pkgver-icon.patch)
# lynx -dump http://www.gimp.org/downloads/|grep bz2|sed 's/.*bz2 \(.*\)/\1/'
md5sums=('0db3fca2f741d6dd51eb61dc85778b16' \
	 '568e1c3875976621b1d653e2ef6f870d')

build()
{
	Fmkdir /usr/share/{applications,application-registry,mime-info}
	Fbuild --sysconfdir=/etc
	Fmkdir /usr/share/pixmaps
	Fln  ../gimp/2.0/images/wilber-icon.png /usr/share/pixmaps/gimp.png
}

# optimalization ok

