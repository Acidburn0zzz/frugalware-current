pkgname=gimp
pkgver=2.0.5
pkgrel=2
pkgdesc="GNU Image Manipulation Program"
url="http://www.gimp.org/"
depends=('gtk+2' 'librsvg')
makedepends=('gimp-print')
up2date=`lynx -dump $url/downloads/|grep tar.bz2|sed 's/.*-\(.*\)\.t.*/\1/'`
source=(ftp://ftp.gimp.org/pub/gimp/v2.0/$pkgname-$pkgver.tar.bz2)
# lynx -dump http://www.gimp.org/downloads/|grep tar.bz2|sed 's/.*\(.*\)$/\1/'
md5sums=('b24d069b9d670d92fc75ba7035e9300d')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	mkdir -p $startdir/pkg/usr/share/{applications,application-registry}
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
