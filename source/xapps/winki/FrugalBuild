# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=winki
pkgver=0.3.11
pkgrel=1
pkgdesc="GTK frontend to mencoder, mplayer and lsdvd"
url="http://www.winki-the-ripper.de"
license="GPL2"
install=$pkgname.install
up2date="lynx -dump $url/index.php?page=changelog | grep -m 1 version | tr -d [[:blank:][:alpha:]]"
source=($url/share/dist/$pkgname-$pkgver.tar.gz)
md5sums=('ceb8ef52dd6a74f0869cee004bf3f8dc')
groups=('xapps')
archs=('i686' 'x86_64')
depends=('gnome-python' 'libdvb' 'lsdvd' 'mplayer' 'pygtk' 'python' 'vcdimager')

build()
{
	Fbuild
	Fdocrel winki/{AUTHORS,CHANGELOG,GPL,INSTALL,README,TODO}
}

# optimalization OK - noarch

