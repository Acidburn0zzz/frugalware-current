pkgname=winki
pkgver=0.4.0
pkgrel=1
pkgdesc="GTK frontend to mencoder, mplayer and lsdvd"
url="http://www.winki-the-ripper.de"
license="GPL 2"
up2date="lynx -dump $url/index.php\?page=changelog|grep -m 1 -o '[0-9\.]\+[0-9]'"
source=($url/share/dist/$pkgname-$pkgver.tar.gz)
sha1sums=('3c7c1886a971f7af5efdafc2408565dec7ccb9ab')
groups=('xapps')
archs=('i686' 'x86_64')
makedepends=('python')
rodepends=('gnome-python' 'libdvb' 'lsdvd' 'mplayer' 'vcdimager')

build()
{
	Fbuild
	Fdocrel winkirip/{AUTHORS,CHANGELOG,GPL,INSTALL,README,TODO}
}

# optimalization OK - noarch

