# Last modified: Sat, 05 Feb 2005 13:41:05 +0100
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gftp
pkgver=2.0.18
pkgrel=1
pkgdesc="A multithreaded ftp client for X"
url="http://gftp.seul.org/"
depends=('gtk+2' 'openssl' 'readline')
groups=('xapps')
up2date="lynx -dump http://gftp.seul.org/|grep 'Stable.*bz'|sed 's/.*-\(.*\)\.t.*/\1/'"
source=(http://gftp.seul.org/$pkgname-$pkgver.tar.bz2 \
	00-$pkgname-$pkgver-menu-file.patch \
	01-$pkgname-$pkgver-hu.patch)
md5sums=('44b19442d06f6dc68c7211d66029d826' \
	'f6484d5cbc23b3d93cdb704e5674a634' \
	'85f93c057af897c59e3dbddda0588ccd')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/00-$pkgname-$pkgver-menu-file.patch || return 1
	patch -p1 < $startdir/src/01-$pkgname-$pkgver-hu.patch || return 1
	# Generate updated gmo from po.
	cd po
	msgfmt -o hu.gmo hu.po
	cd ..
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
