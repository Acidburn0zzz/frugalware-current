# Last Modified: Thu, 08 Dec 2005 00:22:58 +0100
# Compiling Time: 0.33 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=xmms
pkgver=1.2.10
pkgrel=8
pkgdesc="The X MultiMedia System"
url="http://www.xmms.org"
depends=('gtk+' 'libvorbis' 'alsa-lib' 'libmikmod')
makedepends=('esd')
groups=('xapps')
archs=('i686' 'x86_64')
provides=('songplayer')
up2date="lynx -dump http://www.xmms.org/download.php|grep ^XMMS|cut -d ' ' -f 2"
source=(http://www.xmms.org/files/1.2.x/$pkgname-$pkgver.tar.bz2 \
	$pkgname.desktop xmms-1.2.10-fw.patch)
sha1sums=('a3c3d3756d5263183c27b3c50a7f5404cba8bfaf' 'af83776c2704f950957b161b1f408d4e17130c69' \
	  '3b47e187511b2106651719447ae64e50c3fe997a')
[ "$CARCH" == "x86_64" ] && confopts=--disable-simd
[ "$CARCH" != "x86_64" ] && confopts=--enable-simd

build()
{
	Fbuild $confopts
	Ffile /usr/share/applnk/Multimedia/xmms.desktop
}

# optimalization OK
