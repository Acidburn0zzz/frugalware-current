# Compiling Time: 0.40 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=gvim
pkgver=6.4
pkgrel=3
pkgdesc="VIM - Vi IMproved console (GTK version)"
url="http://www.vim.org"
depends=('gpm' 'gtk+2' 'vim')
groups=('xapps')
archs=('i686' 'x86_64')
backup=(usr/share/vim/vimrc)
up2date="wget -q -O - --passive-ftp ftp://ftp.vim.org/pub/editors/vim/unix/.message|grep tar.gz|tr -s ' '|sed -n '1 p'|cut -d ' ' -f 2|cut -d - -f 2"
source=(ftp://ftp.vim.org/pub/vim/unix/vim-$pkgver.tar.bz2 \
        vim-$pkgver-vimrc.diff)
sha1sums=('4ecc16d704b303db25c52c6bc33ab65e661ace93' \
	  'd58d1eadd1c8a0276680c86e8ca859e9c6282f3f')

build()
{
	Fcd vim`echo $pkgver|sed 's/\.//'`
	Fpatchall
	cd src
	Fmake --with-x --enable-gui=gtk2
	make DESTDIR=$Fdestdir VIMRTDIR= installvimbin
	Fmv /usr/bin/vim /usr/bin/gvim
	Fln /usr/bin/gvim /usr/bin/gview
}

# vim: ft=sh

# optimalization OK
