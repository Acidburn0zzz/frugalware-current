pkgname=wine
pkgver=0.9.21
pkgrel=1
pkgdesc="An Open Source implementation of the Windows API on top of X and Unix"
url="http://winehq.com"
## sane-backends , gphoto2 , jack , arts , nas
depends=('lcms' 'mesa' 'libsm' 'libstdc++' 'libxxf86dga' 'freetype2' 'libxslt' 'hal' \
	'fontforge' 'libjpeg' 'libxml2' 'libusb' 'freeglut' 'alsa-lib' 'esd' 'libxrender' 'libxrandr')
makedepends=('flex' 'bison')
groups=('xapps')
options=('force' 'scriptlet')
archs=('i686' '!x86_64') ## fixing soon maybe emul needed
up2date="lynx -dump $url/site/download |grep Snapshot|sed 's/.*: \(.*\)/\1/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/wine-$pkgver.tar.bz2 rc.wine \
        rc.wine-{de,hu}.po)
sha1sums=('c579ef0c831b81d09a492f0564bdcf38338a71cd' \
          '791f98451f0c6a8a624af63de96f6d7ea0303e63' \
          'da1f0ea2ee88a96d8bd255605abc16636564fd63' \
          '225de768810fc6439896b8274b2f5332cf91fc01')


build()
{
	Fconf --enable-opengl --disable-debug --disable-trace
	make depend || return 1
	make || return 1
	Fmakeinstall
	Frcd2
}

# optimization OK
