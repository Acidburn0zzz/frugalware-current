pkgname=wine
pkgver=0.9.26
pkgrel=1
pkgdesc="An Open Source implementation of the Windows API on top of X and Unix"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
url="http://winehq.com"
## sane-backends , gphoto2 , jack , arts , nas
depends=('lcms' 'mesa' 'libsm' 'libstdc++' 'libxxf86dga' 'freetype2' 'libxslt' 'hal>=0.5.7.1-3' \
	'fontforge' 'libjpeg' 'libxml2' 'libusb' 'freeglut' 'alsa-lib' 'esd' 'libxrender' 'libxrandr')
makedepends=('flex' 'bison' 'fontforge')
groups=('xapps')
options=('force' 'scriptlet')
archs=('i686' '!x86_64') ## fixing soon maybe emul needed
up2date="lynx -dump $url/site/download |grep Snapshot|sed 's/.*: \(.*\)/\1/'"
source=($source rc.wine rc.wine-{de,hu}.po)
sha1sums=('fc5cc0f14df7db577ffbf0deb452b4a379963abf' \
          '4034515b072dbd948096320def5ac5b017ed562a' \
          'da1f0ea2ee88a96d8bd255605abc16636564fd63' \
          '225de768810fc6439896b8274b2f5332cf91fc01')


build()
{
	Fbuild --enable-opengl --disable-debug --disable-trace
	#make depend || return 1
	#make || return 1
	#Fmakeinstall
	Frcd2
}

