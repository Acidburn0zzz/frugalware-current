# Compiling time: 0.66 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=gvfs
pkgver=1.4.2
pkgrel=1
pkgdesc="gvfs is a userspace virtual filesystem designed to work with the i/o abstractions of gio."
url="http://www.gnome.org/"
depends=('glib2>=2.20.1' 'dbus' 'avahi-glib' 'avahi' 'hal')
makedepends=('intltool' 'gnome-doc-utils' 'samba' 'fuse' 'libsoup>=2.28.1' 'gconf' \
		'gnome-keyring' 'libcdio' 'gphoto2' 'obexftp' \
		'bluez-libs' 'expat' 'openssh')
groups=('xapps')
archs=('i686' 'x86_64' 'ppc')
Finclude gnome
source=($source gvfs-libsoup.diff)
sha1sums=('d2d93e3de6213b96f3a5102964ed6f61955ce6f9' \
          '1eb9391f6bf3716ddc8fbf75340257e537c61199')

subpkgs=("gvfs-gconf")
subdescs=('gvfs with gconf support for Gnome')
subdepends=("gconf")
subrodepends=("gvfs=$pkgver")
subgroups=('gnome')
subarchs=('i686 x86_64 ppc')

build(){
	Fcd
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
	Fsplit gvfs-gconf /usr/lib/gio/modules/libgiogconf*
}

# optimization OK
