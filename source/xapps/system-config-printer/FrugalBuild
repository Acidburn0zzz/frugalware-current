pkgname=system-config-printer
pkgver=1.5.11
pkgrel=1
pkgdesc="The purpose of the tool is to configure a CUPS server using the CUPS API."
url="https://github.com/zdohnal/system-config-printer"
depends=('python3-pycups' 'pygobject3' 'pycurl' 'dbus-python3' 'python3' 'python3-requests')
makedepends=('docbook-xml' 'docbook-xsl' 'intltool' 'xmlto' 'desktop-file-utils' 'cups' \
	'gobject-introspection')
groups=('xapps')
archs=("x86_64")
options+=('scriptlet') # for docbook
_F_gnome_desktop="y"
_F_github_author="zdohnal"
_F_github_tag=yes
Finclude gnome-scriptlet github
source+=(no-applet-in-gnome.patch)
sha1sums=('2375c76f695165b7b976390abd55aaf721285df8' \
          'beac8bba6e01490006b202da8ebd9b2833faf6b7')
replaces=('gnome-cups-manager')
Fconfopts+="  --with-udev-rules"
unset MAKEFLAGS

build() {
	Fcd
	Fexec touch README ChangeLog
	Fautoreconf
	Fbuild
	Fsed cups.socket org.cups.cupsd.socket $Fdestdir/lib/systemd/system/configure-printer\@.service

	Fbuild_gnome_scriptlet
}

# optimization OK
