# Last Modified: Mon, 09 May 2005 00:21:30 +0200
# Compiling Time: ~2,1 hours
# Maintainer: IroNiQ <iron@ironiq.hu>

pkgname=e16keyedit
pkgver=0.2
pkgrel=1
pkgdesc="Keybinding editor for Enlightenment DR16"
url="http://www.enlightenment.org/"
depends=('enlightenment')
groups=('xapps')
#makedepends=('zip')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=2 & package_id=44123' | grep \"$pkgname-.*.tar.\(gz\|bz2\)\" | tail -n 1 | sed 's/.*-\(.*\)\.t.*/\1/'"
source=(http://dl.sf.net/enlightenment/$pkgname-$pkgver.tar.gz)
md5sums=('0ebff2c6fb749113081b2212c777e19b')

build() {

	cd $startdir/src/$pkgname-$pkgver
	
	make || return 1

	install -m 755 -d $startdir/pkg/usr/bin
	install -m 755 -c $startdir/src/$pkgname-$pkgver/e16keyedit $startdir/pkg/usr/bin
						
}

# vim: ft=sh
