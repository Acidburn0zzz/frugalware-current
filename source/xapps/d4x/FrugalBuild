# Compiling Time: ~1 minute
# Maintainer: IroNiQ <iron@ironiq.hu>

pkgname=d4x
pkgver="2.5.0final"
pkgrel=1
pkgdesc="Download manager for Linux"
url="http://www.krasu.ru/soft/chuchelo/"
up2date=`lynx -dump ${url}files/ | grep '.tar.gz' | grep 'd4x' | grep -iv '\(rc\|beta\)' | grep '^\ \[' | awk '{print $2}' | cut -d ']' -f 2 | cut -d '.' -f 1-3 | cut -d '-' -f 2 | tail -n 1`
source=(http://www.krasu.ru/soft/chuchelo/files/$pkgname-$pkgver.tar.gz)
depends=('gtk+2')
groups=('xapps')
md5sums=('c2b2f5571c2028dd845563e69a1d55c3')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
