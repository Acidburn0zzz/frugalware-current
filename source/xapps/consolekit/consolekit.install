post_install()
{
	/usr/sbin/chkconfig --add rc.xconsolekit
	/sbin/service xconsolekit start
}

pre_upgrade()
{
	/sbin/service xconsolekit stop
}

post_upgrade()
{
	/sbin/service xconsolekit start
}

pre_remove()
{
	/sbin/service xconsolekit stop
	/usr/sbin/chkconfig --del rc.xconsolekit
}

op=$1
shift

$op $*

