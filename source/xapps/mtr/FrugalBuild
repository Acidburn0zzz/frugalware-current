# Maintainer: xbit <xbit@frugalware.org>
# Category: xapps

pkgname=mtr
pkgver=0.69
pkgrel=2
pkgdesc="A single network diagnostic tool"
url="http://www.bitwizard.nl/mtr/"
depends=('gtk+' 'ncurses')
makedepends=('gtk+2')
groups=('xapps')
archs=('i686' 'x86_64')
conflicts=('mtr-nc')
up2date="lynx --dump ftp://ftp.bitwizard.nl/mtr/ | tail -n 3 | grep \"tar.gz\" | sed -e 's/.*mtr-\(.*\).tar.gz/\1/'"
source=(ftp://ftp.bitwizard.nl/mtr/$pkgname-$pkgver.tar.gz mtr-ac-res_mkquery.patch0)
sha1sums=('3fd0fa148b349d1966e0d79af0ffb84ecc7bed4b' \
          'a0d54a26a355d4ccc01703b726fc365f32750079')
build() {
	Fcd
	Fpatchall
	autoconf
	Fmake
	Fmakeinstall
	echo -e '#!/bin/sh\nmtr --curses $@' > $startdir/pkg/usr/sbin/mtr-nc
	chmod u+x $startdir/pkg/usr/sbin/mtr-nc
}

# optimalization OK

