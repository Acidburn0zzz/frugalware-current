# Compiling time: 2.50 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>
# Contributor: voroskoi <voroskoi@gmail.com>

pkgname=pidgin
pkgver=2.4.1
pkgrel=1
pkgdesc="A multi-protocol instant messaging (IM) client"
depends=('gtk+2>=2.12.1' 'libao' 'audiofile' 'gtkspell' 'nss' 'startup-notification>=0.9' \
	'avahi-compat>=0.6.21' 'gnutls>=2.2' 'libxml2' 'libxslt' 'libxscrnsaver' \
	'dbus-glib>=0.74' 'dbus-x11' 'gstreamer' 'avahi-glib>=0.6.21')
makedepends=('evolution-data-server>=1.12.0' 'doxygen' 'tk' 'perl-xml-parser' 'intltool' 'sqlite3')
conflicts=('gaim')
provides=('gaim')
replaces=('gaim')
groups=('xapps')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.bz2"
_F_sourceforge_broken_up2date=1
Finclude sourceforge
url="http://www.pidgin.im/"
options=('scriptlet')
source=(${source[@]} perl-fix.patch)
sha1sums=('3c86d1ec487eade72d5d513dcd5bb491e50640d2' \
          'c3facfbc8ec54b6b5a4f83a827cd766658fd9777')

build() {
	Fcd
	Fpatchall
	Fmake \
		--enable-nss \
		--enable-gnutls \
		--disable-fatal-asserts \
		--disable-dependency-tracking \
		--enable-static \
		--with-howl-includes=/usr/include/avahi-compat-howl/ \
		--enable-dbus \
		--enable-gstreamer
	make docs || Fdie
	Fmakeinstall
	Fmkdir usr/share/doc/$pkgname-$pkgver/html/
	cp -aR $Fsrcdir/$pkgname-$pkgver/doc/html/* \
		$Fdestdir/usr/share/doc/$pkgname-$pkgver/html/ || Fdie
}

# optimization OK
