pkgname=frugalrledit
pkgver=0.2
pkgrel=2
pkgdesc="Runlevel Editor for Frugalware Linux"
depends=('chkconfig' 'python')
up2date=$pkgver
source=($pkgname-$pkgver.tar.gz)
md5sums=('d1c55464596d1eb09b5db0eeb9c8d7e1')
license="GPL"
groups=(xapps)

build() {
    cd $startdir/src/$pkgname-$pkgver || exit 1

    ./install --prefix=/usr --root=$startdir/pkg
}

