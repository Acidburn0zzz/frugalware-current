# Last Modified: Sat, 26 Nov 2005 00:48:48 +0100
# Compiling Time: 2.81 SBU
# Maintainer: Zsolt Szalai <xbit@frugalware.org>

pkgname=blender
pkgver=2.37
pkgextraver=a
pkgrel=3
pkgdesc="A 3D modeling/rendering/animation/gaming application"
url="http://blender3d.org"
depends=('sdl' 'freetype2' 'gettext' 'libjpeg' 'libpng')
groups=('xapps')
archs=('i686' 'x86_64')
makedepends=('scons' 'ftgl')
up2date="lynx -dump 'http://download.blender.org/source/?C=M;O=D;5~'|grep tar.gz$|sed -ne 's/.*r-\(.*\)\.tar.gz/\1/' -e s/$pkgextraver// -e '1 p'"
source=("http://download.blender.org/source/$pkgname-$pkgver$pkgextraver.tar.gz" 'blender.diff' 'blender.desktop' 'blender.png' \
	'blender64.diff' 'blender-2.37a-x86_64.patch')
sha1sums=('8070654abdca449658f8fb7c9ecfc4fb7e445465' \
	  'afc3a3c318eb1b3c67918a29bc1eb147925b1d70' \
	  '44ee67a0ed814481aacca0dfc8cf45ae7a48eed5' \
	  '5d2583d847735c913c26c96ace8192a646323da8' \
	  'bb997b46af3fae0661ae1bd5434ed0f09aa61803' \
	  '2cdabdb99f1236c0339a50f64f9a4ec5f1d0050a')

build() {
	Fcd $pkgname
	[ "$CARCH" == "x86_64" ] && Fpatch blender64.diff
	[ "$CARCH" == "x86_64" ] && Fpatch blender-2.37a-x86_64.patch
	[ "$CARCH" != "x86_64" ] && Fpatch blender.diff
	scons
	install -d ./release/plugins/include
	install -m 644 source/blender/blenpluginapi/*.h ./release/plugins/include
	chmod +x ./release/plugins/bmake
	make -C ./release/plugins

	Fmkdir /usr/bin/
	install -m 755 blender ../../pkg/usr/bin/blender
	install -m 755 blenderplayer ../../pkg/usr/bin/blenderplayer

	install -d ../../pkg/usr/lib/blender/plugins/sequence
	install -d ../../pkg/usr/lib/blender/plugins/texture
	install -m 644 ./release/plugins/sequence/*.so ../../pkg/usr/lib/blender/plugins/sequence
	install -m 644 ./release/plugins/texture/*.so ../../pkg/usr/lib/blender/plugins/texture

	cp -a ./release/bpydata ../../pkg/usr/lib/blender
	cp -a ./release/scripts ../../pkg/usr/lib/blender
	cp -a ./bin/.blender/locale ../../pkg/usr/lib/blender
	install -m 644 ./release/VERSION ../../pkg/usr/lib/blender
	install -m 644 ./bin/.blender/.Blanguages ../../pkg/usr/lib/blender
	install -m 644 ./bin/.blender/.bfont.ttf ../../pkg/usr/lib/blender
	Ffile /usr/share/pixmaps/blender.png
	Ffile /usr/share/applications/blender.desktop
}

# optimaization ok

