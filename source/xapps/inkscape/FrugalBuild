# Compiling time: ~6 minutes
# Maintainer: Shrift <shrift@frugalware.org>
# Modified by Laszlo Dvornik <dvornik@gnome.hu>

pkgname=inkscape
pkgver=0.41
pkgrel=2
pkgdesc="A vector illustrator program for GNOME"
url="http://www.inkscape.org/"
depends=('libgc' 'gtkmm' 'libxslt' 'expat' 'gtkspell' 'desktop-file-utils')
makedepends=('intltool')
groups=('xapps')
install=$pkgname.install
up2date="lynx -dump 'http://heanet.dl.sourceforge.net/sourceforge/inkscape/?C=M;O=D'|grep tar.bz2$|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('9b4bbfaae688127dca4c3d816a42b21a' \
	'45a9c321ce19a9fd38f0071602d2d160')

build() {
	Fbuild --without-gnome-print || return 1
}

