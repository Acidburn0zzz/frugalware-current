pkgname=mtools
pkgver=3.9.10
pkgrel=1
pkgdesc="A is a collection of utilities to access MS-DOS disks from Unix without mounting them"
url="http://mtools.linux.lu/"
depends=('x')
makedepends=('texinfo')
up2date="lynx -dump $url/download.html|Flasttar"
archs=('i686' 'x86_64')
groups=('xapps')
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('1992fd360dc1bb9717da028aa3d3afb17488bcd1')

build()
{
	Fbuild --enable-floppyd
}

# optimalization OK

