pkgname=tvtime
pkgver=0.9.15
pkgrel=1
pkgdesc="A program for viewing tv on the computer"
url="http://tvtime.sourceforge.net"
depends=('glibc' 'freetype2' 'gcc' 'zlib' 'x' 'libpng' 'libxml2')
up2date=`lynx -dump 'http://prdownloads.sourceforge.net/tvtime/?sort_by=date&sort=desc'|grep tar.gz$|sed -n 's/.*me-\(.*\).t.*/\1/;1 p'`
source=(http:/download.sourceforge.net/tvtime/$pkgname-$pkgver.tar.gz)
md5sums=('bf1b1547e8979cb6486584684e315847')

build() {
        cd $startdir/src/$pkgname-$pkgver
        ./configure --prefix=/usr
	
        make || return 1
	
        make DESTDIR=$startdir/pkg install
}

