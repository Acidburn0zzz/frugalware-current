# Compiling Time: 0.07 SBU
# Maintainer: Baste <baste@frugalware.org>

pkgname=gpaste
pkgver=20110709
pkgrel=1
pkgdesc="Is a clipboard management daemon with DBus interface."
url="https://github.com/Keruspe/GPaste"
depends=('gtk+3')
makedepends=('intltool' 'vala')
groups=('xapps')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
Finclude gnome-shell-extensions gnome-scriptlet
up2date="Flasttar http://ftp.frugalware.org/pub/other/people/baste/snapshots/$pkgname"
source=(http://ftp.frugalware.org/pub/other/people/baste/snapshots/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('a75838e5c65999eb55f56e3133c8501cb7844ca4')

subpkgs=('gnome-shell-extension-gpaste')
subdescs=('Is a clipboard management tool which comes with a tray applet as well as a GNOME Shell extension.')
subdepends=('gnome-shell')
subrodepends=('gpaste')
subgroups=('gnome')
subarchs=('i686 x86_64')

build()
{
	Fcd
	./autogen.bash --enable-gnome-shell-extension
	./configure --prefix=/usr
	Fmake
	Fmakeinstall
	FGnomeShellVersion
	Fbuild_gnome_scriptlet
	Fsplit gnome-shell-extension-gpaste usr/share/gnome-shell
}
