# Compiling Time: 0.64 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=mjpegtools
pkgver=2.1.0
pkgrel=1
pkgdesc="The mjpeg programs are a set of tools that can do recording of videos and playback under Linux."
_F_sourceforge_dirname="mjpeg"
Finclude sourceforge
url="http://mjpeg.sourceforge.net/"
source=("${source[@]}" no-archflags.patch)
depends=('libxml2>=2.7.8' 'libjpeg>=8a' 'libpng>=1.4.1' 'sdl_gfx>=2.0.25' 'libquicktime>=1.1.5-4' 'libxxf86dga>=1.0.2-2')
groups=('xapps')
options=('scriptlet')
archs=('i686' 'x86_64')
sha1sums=('b9effa86280e23d67369e842e5cb645948583097' \
          '7ae8bdb1669b05042f5c2065550c24c0705e0734')

build()
{
	if [ "$CARCH" == "x86_64" ]; then
		CFLAGS+=" -fPIC"
		CXXFLAGS+=" -fPIC"
	fi

	Fcd
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
}
# optimization OK
