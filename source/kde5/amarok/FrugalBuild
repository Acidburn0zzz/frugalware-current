pkgname=amarok
pkgver=2.9.0.gf6ec309
pkgrel=1
pkgdesc="amaroK is a music player for Linux and Unix with an intuitive interface"
archs=('i686' 'x86_64')
groups=('kde5')
_F_scm_type="git"
_F_scm_tag="kf5"
_F_scm_url="git://anongit.kde.org/amarok"
_F_gnome_iconcache=y
_F_kde_project="applications"
Finclude kf5 scm gnome-scriptlet
depends=("threadweaver>=$_F_kf5_full" "ktexteditor>=$_F_kf5_full" \
	"kdnssd>=$_F_kf5_full" "qt5-webkit>=$_F_kdever_qt5" \
	"kdelibs4support>=$_F_kf5_full" "plasma-framework>=$_F_kf5_full" \
	"kcmutils>=$_F_kf5_full"  "knewstuff>=$_F_kf5_full" \
	"knotifyconfig>=$_F_kf5_full" \
	'taglib-extras' 'qca-qt5' 'ffmpeg' 'qjson' 'gdk-pixbuf2' \
	'loudmouth' 'mysql' 'libofa' 'libmtp' 'libgpod' 'liblastfm>=1.0.9')
makedepends+=('libmysqld')
unset source

replaces=("juk")
conflicts=("${replaces[@]}")

build()
{
        Funpack_scm
	Fsed 'PATH_SUFFIXES lastfm5' 'PATH_SUFFIXES lastfm' cmake/modules/FindLibLastFm.cmake
        KDE_build
}

# optimization OK
