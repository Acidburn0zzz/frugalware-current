subdepends=("${subdepends[@]}" "kdelibs4support>=$_F_kf5_full qt5-svg>=$_F_kdever_qt5")
subrodepends=("${subrodepends[@]}" '')
subgroups=("${subgroups[@]}" 'kde5')
subarchs=("${subarchs[@]}" 'i686 x86_64')

_F_kde_subpkgs=("${subpkgs[@]}")

