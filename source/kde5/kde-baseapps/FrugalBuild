Finclude kf5 scm gnome-scriptlet
depends=()
makedepends+=("kactivities5>=$_F_kf5_full" "kdoctools>=$_F_kf5_full" "kcmutils>=$_F_kf5_full" "khtml>=$_F_kf5_full")
unset source

conflicts=('kdebase' 'nsplugins' 'kfind')
replaces=("${conflicts[@]}")

subpkgs=("${subpkgs[@]}" "kdepasswd")
subdescs=("${subdescs[@]}" "Changes a UNIX password.")
subdepends=("${subdepends[@]}" "kdesu>=$_F_kf5_full kwidgetsaddons>=$_F_kf5_full qt5-x11extras>=$_F_kdever_qt5")
