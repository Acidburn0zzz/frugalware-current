# Compiling Time: 0.38 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=busybox-fwlive
pkgver=1.2.2
pkgrel=1
pkgdesc="Utilities for rescue and embedded systems. (for fwlive)"
url="http://www.busybox.net/"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
#up2date="lynx -dump 'http://www.busybox.net/downloads/?C=M;O=D' |grep [0-9].tar.bz2|sed 's/.*-\(.*\)\.t.*/\1/;q'"
up2date=$pkgver
source=(http://www.busybox.net/downloads/busybox-$pkgver.tar.bz2 config)
sha1sums=('59670600121c9dacfd61e72e34f4bd975ec2c36f'\
          'e795fbcdfd24790e75c3b85b0972a75b176e2fb1')

build()
{
        Fcd busybox-$pkgver
        cp $Fsrcdir/config .config || Fdie
	make include/bb_config.h || Fdie
        Fmake
        make PREFIX=$Fdestdir/usr/share/busybox install || Fdie
}

# optimization OK

