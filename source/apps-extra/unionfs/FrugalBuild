# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=unionfs
pkgver=1.4
pkgrel=1
pkgdesc="A stackable unification file system."
url="http://www.filesystems.org/project-unionfs.html"
depends=('e2fsprogs')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|Flasttar"
source=(ftp://ftp.fsl.cs.sunysb.edu/pub/unionfs/unionfs-$pkgver.tar.gz)

build()
{
	Fcd
	make PREFIX=/usr/ utils || return 1
	make PREFIX=$Fdestdir/usr/ install-utils
}

sha1sums=('746fe5b9d6348e6530a85b38cdb8a8e08f513264')
