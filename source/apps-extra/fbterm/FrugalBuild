pkgname=fbterm
pkgver=1.5
pkgrel=2
pkgdesc="A terminal emulator that runs in the framebuffer."
depends=('fontconfig' 'zlib' 'libstdc++')
groups=('apps-extra')
archs=('i686' 'x86_64')
Finclude googlecode
source=(${source[@]} $pkgname-bi)
sha1sums=('45a74a11b13f9e9b8a8f29fe9155c9cab3772f13' \
          '90e8ff21bac81ae364809d0e6101ed07c4a72b06')

build() {
        Fbuild
        Fexe   /usr/bin/$pkgname-bi
}

# optimization OK
