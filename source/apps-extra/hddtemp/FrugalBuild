# Compiling Time: 0.10 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=hddtemp
pkgver=0.3_beta15
pkgrealver=0.3-beta15
pkgrel=1
pkgdesc="hddtemp will show you the hard drive's temperature if the hard drive supports it"
url="http://www.guzu.net/linux/hddtemp.php"
groups=('apps-extra')
depends=('glibc')
archs=('x86_64' 'i686')
up2date="lynx -dump http://www.guzu.net/linux/hddtemp.php|grep 'Sources '|sed -ne 's/.*p-\(.*\).t.*/\1/ p' |sed s/-/_/"
source=(http://www.guzu.net/files/$pkgname-$pkgrealver.tar.bz2 hddtemp.db update-hddtempdb)
sha1sums=('65393b0a4d9862c030c81702d95c1acd00da275b' \
	  'f4ed19e51edfe5b5e8edffab7c650a0e6ce3ccb4' \
	  '0ac2acd52ed460db9e88aa7a0eb9f1f97ff5718c')

build () {
	Fcd $pkgname-$pkgrealver
	Fbuild
	Fmkdir /usr/share/misc/
	cd $Fsrcdir
	Ffilerel hddtemp.db usr/share/misc/hddtemp.db
	Fexe update-hddtempdb /usr/sbin/update-hddtempdb
}

# optimization OK
