pkgrel=1
pkgdesc="Restores Images of blockdevices made with zsplit."
url="http://www.device-image.de"
depends=('zsplit')
license="GPLv2"
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.device-image.de/main_download.htm|grep -m1 'unzsplit_\(.*\).tar.gz'|sed 's/.*src-\(.*\).t.*/\1/'"
source=(http://www.device-image.de/download/${pkgname}_src-$pkgver.tar.gz)
sha1sums=('3875a318e35dc0716a24af9e18775654d63ab39a')

