# Last Modified: Tue, 19 Sep 2006 10:38:06 +0200
# Compiling Time: 1.12 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=ltp
pkgver=20060918
# sometimes != $pkgver
realver=$pkgver
pkgrel=1
pkgdesc="Linux Test Project: testsuite for the Linux kernel"
url="http://ltp.sourceforge.net/"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://prdownloads.sourceforge.net/ltp/ |grep ltp-full|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-full-$pkgver.tgz \
	$pkgname-{IDcheck_noninteractive,runltp_path}.diff)

build() {
	Fcd $pkgname-full-$realver
	Fpatchall
	Fmake
	make install || Fdie
	Fmkdir /usr/libexec/ltp/testcases /usr/bin/
	cp --parents -r testcases pan/pan runtest ver_linux IDcheck.sh $Fdestdir/usr/libexec/ltp/ || Fdie
	cp runltp runalltests.sh $Fdestdir/usr/bin/ || Fdie
}

# optimization OK
sha1sums=('e777ef34c59f45badb344d0871cf8869a48c74f1' \
	  'c7a2132257cf1c430a9692009952084746722c40' \
	  'e9ff5dbafdd07ebe796b2f064066d7dbb7c7b6c5')
