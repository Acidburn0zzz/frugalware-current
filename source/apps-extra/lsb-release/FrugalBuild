pkgname=lsb-release
pkgver=1.4
pkgrel=1
pkgdesc="LSB version query program."
depends=()
_F_sourceforge_dirname="lsb"
_F_sourceforge_realname="lsb_release"
Finclude sourceforge
groups=('apps-extra')
archs=('i686')
sha1sums=('ecf883ada9bf4e1feca3f2e1494bd798792aee18')

build() {
  Fcd
  Fmkdir etc/
  echo DISTRIB_ID="frugalware" > "$Fdestdir/etc/lsb-release"
  Fmake
  Fmakeinstall
  #  make DESTDIR="$startdir/pkg" install - doesn't work, doeing it manually
  #install -D -m 644 lsb_release.1.gz $startdir/pkg/usr/man/man1/lsb_release.1.gz
  #install -D -m 755 lsb_release $startdir/pkg/usr/bin/lsb_release
}

