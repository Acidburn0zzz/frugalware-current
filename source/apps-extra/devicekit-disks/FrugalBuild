_F_archive_name=DeviceKit-disks
pkgver=004
pkgrel=3
pkgdesc="D-Bus abstraction for enumerating devices disks and querying history and statistics"
url="http://www.freedesktop.org/wiki/Software/hal"
depends=('dbus-glib' 'udev' 'devicekit' 'policykit' 'parted' 'lvm2' \
	'libatasmart=0.13' 'sg3-utils' 'sqlite3' 'libgudev')
makedepends=('intltool')
groups=('apps-extra')
archs=('i686' 'x86_64' 'ppc')
up2date="Flasttar http://hal.freedesktop.org/releases/"
source=(http://hal.freedesktop.org/releases/$_F_archive_name-$pkgver.tar.gz)
sha1sums=('092ad5d64502def1204a6446513f4e142926b9db')
# No pkgconfig file
export DEVMAPPER_CFLAGS="-I/usr/include" DEVMAPPER_LIBS="-ldevmapper"

build() {
	Fcd
	Fsed 'SYSFS' 'ATTRS' src/95-devkit-disks.rules
	Fbuild
}

