# Compiling Time: 0 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=fwupdate
pkgver=9
pkgrel=1
pkgdesc='Tools for using the ESRT and UpdateCapsule() to apply firmware updates'
archs=('x86_64')
depends=('efivar' 'libsmbios' 'bash')
makedepends=('pesign' 'gnu-efi')
groups=('apps-extra')	
_F_github_author="rhinstaller"
_F_github_tag=yes
Finclude github
source+=("0001-Fix-uninitialized-variable.patch")
sha1sums=('68873b972eff83c360d8e50d0214e354d881f272' \
          'adab4fe7cb8bf1da81b0a1b7a45ccdc2f3688fdc')

build() {
	Fcd
	Fpatchall
	Fexec make EFIDIR=frugalware GNUEFIDIR=/usr/lib || Fdie
	Fexec make EFIDIR=frugalware LIBDIR=/usr/lib DESTDIR="${Fdestdir}" install || Fdie
	Fmkdir lib/systemd/
	Fmv usr/lib/systemd/system lib/systemd/
}

# optimization OK
