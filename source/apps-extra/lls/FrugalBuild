pkgname=lls
pkgver=1.0.1
pkgrel=1
pkgdesc="(ls) command alternative, more colors and additional info."
url="http://code.google.com/p/lls"
depends=()
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date=$pkgver
source=(http://lls.googlecode.com/files/lls)
sha1sums=('5a77eadc2cc0b0034dfbf72809bc1305b9e7d247')

build() {
	Fexe lls /usr/bin/$pkgname
}
