# Compiling time: 4.82 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=inxi
pkgver=2016.11.08.g89e18d2
pkgrel=1
pkgdesc="inxi is a command line system information tool."
url="http://smxi.org/docs/inxi.htm"
depends=('coreutils' 'gawk' 'grep' 'pciutils' 'procps' 'sed' 'sudo' 'xrandr' \
	 'xdpyinfo' 'mesademos' 'hddtemp' 'lmsensors' 'usbutils' 'dmidecode' \
	 'file' 'kmod' 'iproute2')
groups=('apps-extra')
archs=('i686' 'x86_64')
options=('noversrc')
_F_scm_type="git"
_F_scm_url="https://github.com/smxi/inxi.git"
Finclude scm

build()
{
	Funpack_scm
	Fcd $pkgname
	Fexerel /usr/bin/$pkgname
	Fmanrel $pkgname.1
}
