# Compiling Time: 0.01 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=splix
pkgver=1.0.1
pkgrel=2
pkgextraver=-1
pkgdesc="Splix is a driver for SPL printers (Samsung and several Xerox printers)."
makedepends=('cupsddk')
depends=('cups>=1.2')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext="$pkgextraver.tar.bz2"
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=175815 |grep splix.*tar |sed -ne 's/.*x-\(.*\).ta.*/\1/;1p'|sed s/$pkgextraver//"

build() {
	Fmkdir /usr/lib/cups/filter
	Fsed "-O2" "$CFLAGS" Makefile
	Fsed "CUPS\(.*\):= " "CUPS\1:= $Fdestdir/" Makefile
	Fbuild
}
sha1sums=('34e9ed6860dc463b282ffb25dd0140b231d13366')

# optimization OK
