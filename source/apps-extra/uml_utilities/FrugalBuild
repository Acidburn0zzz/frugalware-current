# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=uml_utilities
pkgver=20040406
pkgrel=5
pkgdesc="User Mode Linux Utilities"
url="http://user-mode-linux.sourceforge.net/"
depends=('ncurses')
backup=(etc/sysconfig/uml)
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/dl-sf.html|grep $pkgname|sed -n 's/.*s_\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sf.net/sourceforge/user-mode-linux/${pkgname}_$pkgver.tar.bz2 \
	rc.uml uml)
sha1sums=('6a2eb9df9fd37ee367af71c11a27e9ee14733517' \
          '411b78516ecd4d333ac007d1b1f67af0d3d99cf0' \
          '53c415d9f3231ed37a35caa96c36bdb2850a59ba')

build()
{
	Fcd tools
	Fmake
	Fmakeinstall DESTDIR=$Fdestdir
	Frcd2 uml
	Ffile /etc/sysconfig/uml
	Fmkdir /var/run/uml
	chmod 0700 $Fdestdir/var/run/uml || Fdie
}

# optimization OK
