#
# /etc/sysconfig/mdadm
#
# confiugation file for user-mode-linux
#

# machines to start/stop
machines=('ubd0=/home/uml/root_fs_0 eth0=tuntap,,,192.168.0.254 mem=128MB con0=null,fd:1 con=null')

# how often in seconds rc.uml polls to check if the machines are shut down
SHUTDOWN_POLL=2
# don't wait more than this for machines to properly shut down
SHUTDOWN_TIMEOUT=300

