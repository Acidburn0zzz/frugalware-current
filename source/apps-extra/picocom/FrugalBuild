# Compiling Time: 0 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=picocom
pkgver=3.0
pkgrel=1
pkgdesc="A minimal dumb terminal emulation program."
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_github_author="npat-efault"
_F_github_tag="y"
Finclude github
sha1sums=('35423cd891e8434c71efcbc80f64d37c4e671fc3')

build()
{
	Fcd
	make UUCP_LOCK_DIR=/run/lock/picocom || Fdie
	Fexerel /usr/bin/$pkgname
	Fmanrel $pkgname.1
}

# optimization OK
