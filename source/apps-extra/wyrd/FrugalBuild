pkgname=wyrd
pkgver=1.4.3b
pkgrel=1
pkgdesc="A text-based front-end to Remind."
url="http://www.eecs.umich.edu/~pelzlpj/wyrd/"
depends=('ncurses')
rodepends=('remind')
makedepends=('ocaml')
backup=(etc/wyrdrc)
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump $url |Flasttar"
source=($url/wyrd-$pkgver.tar.gz)
sha1sums=('cb3604273a1148313786b9112effa9cf7ff508d2')

build()
{
	Fbuild
	Fdocrel doc/manual.html
}

# optimization OK
