pkgname=fuse
pkgver=2.5.3
pkgrel=2
pkgdesc="An interface for filesystems implemented in userspace."
url="http://fuse.sourceforge.net"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=121684 |grep 2.X|sed -e 's/.*]\([0-9\.]*\) [A-Z].*/\1/;q'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-rules.diff)

build()
{
	Fbuild --disable-kernel-module
	Fdocrel Filesystems doc/how-fuse-works
	Frm /dev
}

sha1sums=('e7ffa1efcabffa156f604549f9ada601dbef532e' \
	  '270b5903c4d00a0a06c5b6754b1860dcd5e3f254')

# optimization OK
