pkgname=createtorrent
pkgver=1.1.1
pkgrel=1
pkgdesc="CreateTorrent is a small and fast command line utility for all Linux and Unix operating systems to create BitTorrent files easily."
url="http://www.createtorrent.com"
depends=('openssl')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep tar |sed -ne 's/.*-\(.*\).t.*/\1/;1p'"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('aa5ac44740752e62cfcae9b7c16c3c4b567b284a')

# optimization OK
