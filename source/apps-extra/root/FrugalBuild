# Compiling Time: 34.13 SBU
# Maintainer: Melko <melko@frugalware.org>

options+=('asneeded')

pkgname=root
pkgver=6.00.00
pkgrel=1
pkgdesc="C++ data analysis framework and interpreter from CERN"
url="http://root.cern.ch"
depends=('libxpm' 'libxft' 'avahi-compat' 'libjpeg' 'libtiff' 'libpng' 'xmlrpc-c>=1.16.41' 'gsl' 'libpq' 'ftgl' 'glew>=1.10.0' 'libldap' 'libmysqlclient' 'pcre>=8.30' 'sqlite3' 'fftw')
makedepends=('postgresql')
Finclude cmake
groups=(apps-extra)
archs=('i686' 'x86_64')
Fpkgversep="_v"
_F_archive_grepv="99"
up2date="Flastarchive 'ftp://root.cern.ch/root/' '\.source\.tar\.gz'"
source=(ftp://root.cern.ch/$pkgname/${pkgname}_v${pkgver}.source.tar.gz \
	$pkgname.desktop $pkgname.sh)
sha1sums=('2d484e1c4b09f54844a79a0409648390c5445251' \
          '022e0a9278fb1037177c10b77a312c4555954e80' \
          'bcdb7e69611d7ddc52c5f4e0a9c006d535b3b378')

build() {
	Fcd $pkgname
	rm -rf building || Fdie
	mkdir building || Fdie
	cd building || Fdie
	CMake_conf -DCMAKE_INSTALL_PREFIX=/opt/root \
		-Dbuiltin_glew=OFF \
		-Droofit=ON \
		-Dsoversion=ON
	make || Fdie
	CMake_install

	Ffile /usr/share/applications/$pkgname.desktop
	Fexe /etc/profile.d/root.sh
	Fwrapper 'source /opt/root/bin/thisroot.sh && root $@' root
}

# optimization OK
