pkgname=tmux
pkgver=1.1
pkgrel=1
pkgdesc="A terminal multiplexer"
url="http://sourceforge.net/projects/tmux/"
depends=('ncurses')
Finclude sourceforge
groups=('apps-extra')
archs=('i686' 'x86_64')
sha1sums=('8dc57a70605930bbe61664bd52ed2c8081ea5a1c')

build()
{
	Fcd
	Fsed "PREFIX?= /usr/local" "PREFIX?= /usr/" GNUmakefile
	Fbuild
}	

# optimization OK
