# Compiling time: ~0.01 SBU
# Maintainer: CSÉCSY László <boobaa@frugalware.org>

pkgname=catdoc
pkgver=0.94.2
pkgrel=1
pkgdesc="reads one or more Microsoft word files and outputs text"
url="http://www.45.free.net/~vitus/ice/catdoc/"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.45.free.net/~vitus/software/catdoc/ | grep tar.gz | head -n 1 | sed 's/.*-\([0-9\.]\+\)\..*/\1/'"
source=(ftp://ftp.45.free.net/pub/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('50ce9d7cb24ad6b10a856c9c24183e2b0a11ca04')

build()
{
	Fmkdir /usr/share/catdoc
	Fbuild
}

# optimalization OK
