# Compiling Time: 0 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=pbuilder-ubuntu
pkgver=0.213ubuntu1
pkgrel=1
pkgdesc="personal package builder for Debian packages"
archs=(x86_64 i686)
url="https://launchpad.net/ubuntu/+source/pbuilder"
license=('GPL')
groups=('apps-extra')
depends=('debootstrap' 'dpkg' 'coreutils' 'wget' 'perl-datetime')
makedepends=('ca-certificates')
source=(http://archive.ubuntu.com/ubuntu/pool/main/p/pbuilder/pbuilder_${pkgver}_all.deb)
backup=('etc/pbuilder/pbuilderrc')
sha1sums=('5e0a8a86b58ab40c65d12d0b5152f5465e663d52')
up2date="lynx -dump $url | grep -A 1 Latest | egrep -o \"[0-9.]+ubuntu1\""

build() {
  ar x pbuilder_${pkgver}_all.deb || Fdie
  tar xzf data.tar.gz || Fdie
  Fcp etc/ /etc
  Fcp usr/ /usr
  Fcp var/ /var
  Fmv usr/share/doc/pbuilder usr/share/doc/pbuilder-${pkgver}
}



