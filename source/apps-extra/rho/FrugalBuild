# Compiling Time: 0.02 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=rho
pkgver=1.0.15
pkgrel=1
pkgdesc="A small, very configurable console-based text editor."
url="http://rho.tuxfamily.org"
depends=('ncurses')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | sed 's/latest/$pkgver/g' | Flasttar"
source=($url/$pkgname-latest.tar.bz2)
sha1sums=('4ad79e8973d5f25ebb58f937399328f5a3c12ac8')

build() {
	Fmake
	Fexerel $pkgname /usr/bin/rho
}
