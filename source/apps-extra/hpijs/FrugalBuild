# Compiling Time: 0.11 SBU
# Contributor: VMiklos <vmiklos@frugalware.org>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=hpijs
pkgver=2.7.2
hplip_ver=1.7.2
pkgrel=1
Finclude sourceforge
pkgdesc="Hewlett-Packard inkjet drivers for Foomatic."
url="http://hplip.sourceforge.net/"
depends=('libjpeg' 'libstdc++')
rodepends=('espgs')
conflicts=('foomatic-filters-ppds')
groups=('apps-extra')
archs=('i686' 'x86_64')
source=(http://$_F_sourceforge_mirror.dl.sourceforge.net/sourceforge/hplip/hplip-$hplip_ver.tar.gz)
up2date="lynx -dump $url/release_notes.html |grep HPIJS |sed -ne 's/.*HPIJS \(.*\) which.*/\1/;1p'"

build() {
	Fcd hplip-$hplip_ver/prnt/hpijs
	Fmake
	Fexerel /usr/bin/hpijs
	Fmkdir /usr/share/cups/model/HP
	mv ppd/* $Fdestdir/usr/share/cups/model/HP || Fdie
	Fln cups/model /usr/share/ppd
}
sha1sums=('3cdefdb49e5cacad6939dbd59ba9e2998fcdd19e')

# optimization OK
