# Last modified: Sat, 26 Aug 2006 22:29:40 +0200
# Compiling time: 0.01 SBU
# Maintainer: Janny <janny@frugalware.org>
 
pkgname=dazuko
pkgver=2.3.1
extraver=pre2
pkgrel=1
pkgdesc="On-access virus scanning kernel interface"
url="http://www.dazuko.org"
license="GPL-2 BSD"
Finclude kernel-module
archs=('i686')
groups=('apps-extra')
install=$pkgname.install
up2date="lynx -dump $url/downloads.shtml|grep $pkgname-[0-9\.]*\.tar.gz|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://www.dazuko.org/files/$pkgname-$pkgver-$extraver.tar.gz)
sha1sums=('9b34767d3563bce8bfe19fa0871fd3628db1faf1')
 
build() 
{
	Fcd $pkgname-$pkgver-$extraver
	# no Fcheckkernel, crosscompilation verified
	Fpatchall
	Fsed '`uname -r`' "$kernelbasever-fw$kernelrel" configure
	./configure --system=linux26 --disable-chroot-support || return 1
	make || return 1
	Ffilerel /lib/modules/`uname -r`/extra/$pkgname.ko
}
# A minor problem in the configure script for Linux 2.6 systems was found. 
# 2.3.1-pre2 has been posted to address this problem.
