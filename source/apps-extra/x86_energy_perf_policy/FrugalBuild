# Compiling Time: 0.82 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

Finclude kernel-version

pkgname=x86_energy_perf_policy
pkgver=$_F_kernelver_ver
pkgrel=1
pkgdesc="Kernel tool for setting MSR energy policies"
url="http://www.kernel.org"
rodepends=("kernel=$_F_kernelver_ver")
depends=('pciutils')
makedepends=("kernel-source=$_F_kernelver_ver")
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="$pkgver"
source=()

build()
{
	Fexec cp -rf /usr/src/linux-$_F_kernelver_ver-fw$_F_kernelver_rel . || Fdie
	Fcd linux-$_F_kernelver_ver-fw$_F_kernelver_rel/tools/power/x86/$pkgname
	make clean || Fdie
	Fsed '$(OPTIMIZATION) -fomit-frame-pointer' "$CFLAGS" Makefile
	make  || Fdie
	Fmkdir usr/bin usr/share/man/man8
	make DESTDIR="$Fdestdir" install || Fdie
}

# optimization OK
