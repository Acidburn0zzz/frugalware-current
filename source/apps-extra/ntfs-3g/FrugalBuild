pkgname=ntfs-3g
pkgver=1.0
pkgrel=1
pkgdesc="Third generation Linux NTFS driver with full read-write access."
url="http://www.ntfs-3g.org/"
depends=('fuse')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep 'The stable NTFS-3G'|grep -om1 'ntfs-3g-\(.*\).tgz'|sed 's/.*3g-\(.*\).t.*/\1/'"
source=($url/$pkgname-$pkgver.tgz no-ldconfig.patch)

sha1sums=('e4cf952a17a3a9e3f1e53d09cb8dd544e5ecfd0f'\
          '11c34f6c2b534b41df87962c044d965c944b297d')
# optimization OK
