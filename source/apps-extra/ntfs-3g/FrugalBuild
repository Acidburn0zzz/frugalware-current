pkgname=ntfs-3g
pkgver=1.616
pkgrel=1
pkgdesc="Third generation Linux NTFS driver with full read-write access."
url="http://www.ntfs-3g.org/"
depends=('fuse')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep 'The latest stable release is'|grep -om1 'ntfs-3g-\(.*\).tgz'|sed 's/.*3g-\(.*\).t.*/\1/'"
source=($url/$pkgname-$pkgver.tgz)
Fconfopts="$Fconfopts --disable-ldconfig"

sha1sums=('abf89d14aaeb6dbe27630c3ef275fabc02f940b0')
# optimization OK
