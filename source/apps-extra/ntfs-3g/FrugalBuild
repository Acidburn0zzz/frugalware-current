pkgname=ntfs-3g
pkgver=0.20070207
pkgextraver=RC1
pkgrel=1
pkgdesc="Third generation Linux NTFS driver with full read-write access."
url="http://www.ntfs-3g.org/"
depends=('fuse')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep -m1 'ntfs-3g-\(.*\).tgz'|sed 's/.*3g-\(.*\)-.*/\1/'"
source=($url/$pkgname-$pkgver-$pkgextraver.tgz no-ldconfig.patch)
_F_cd_path="$pkgname-$pkgver-$pkgextraver"

sha1sums=('40be35d94b7330036eae11d1d59562194e88113a'\
          '11c34f6c2b534b41df87962c044d965c944b297d')
# optimization OK
