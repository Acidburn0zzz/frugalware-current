pkgname=qhull
pkgver=2009.1.2
pkgrel=1
pkgdesc="Computes convex hulls, Delaunay triangulations and much more."
url="http://www.qhull.org/"
depends=('glibc')
makedepends=('hd2u')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.qhull.org/download/|grep tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=(http://www.qhull.org/download/qhull-$pkgver.tar.gz)
# optimization OK
sha1sums=('c5b521938b7ec8ee63a655706c71dae61d378e3f')

build()
{
	Fcd
	touch NEWS README AUTHORS ChangeLog
	Fautoreconf
	rm -f NEWS README AUTHORS ChangeLog
	Fbuild
}
