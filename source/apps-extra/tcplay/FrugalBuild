# Compiling Time: 1.52 SBU
# Maintainer: Melko <melko@frugalware.org>

options+=('asneeded')

pkgname=tcplay
pkgver=2.0
pkgrel=1
pkgdesc="Free and simple TrueCrypt implementation based on dm-crypt."
depends=('systemd')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_github_name="tc-play"
_F_github_author="bwalex"
_F_github_tag="1"
_F_github_ver="v$pkgver"
Finclude github cmake
Fpkgversep="/v"
sha1sums=('a3eadf31d33d1c6c103fd7a93185e30d67ee0145')

build() {
	Funpack_github
	Fcd $_F_github_name-$pkgver
	CMake_build
}

# optimization OK
