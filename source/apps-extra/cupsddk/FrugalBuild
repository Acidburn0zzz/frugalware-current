pkgname=cupsddk
pkgver=1.0.1
pkgrel=1
pkgdesc="The CUPS Driver Development Kit provides a suite of utilities that can be used to develop printer drivers."
url="http://www.cups.org/ddk/"
depends=('cups>=1.2')
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump $url |grep Stable |sed 's/.*v\(.*\)/\1/'"
Fconfopts="$Fconfopts --exec_prefix=$Fprefix --includedir=$Fprefix/include"
#source=(ftp://ftp.funet.fi/pub/mirrors/ftp.easysw.com/pub/$pkgname/$pkgver/$pkgname-$pkgver-source.tar.bz2)
source=(http://ftp.frugalware.org/pub/frugalware/frugalware-current/source/apps-extra/$pkgname/$pkgname-$pkgver.tar.bz2)

build() {
	Fmake
	Fmakeinstall BUILDROOT=$Fdestdir
}
sha1sums=('43ca89318e9b2a8478d7dded8d5201b0c28d0c38')

# optimization OK
