# Compiling Time: 0.01 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=vbetool
pkgver=0.7_1
pkgrel=1
pkgdesc="vbetool uses lrmi in order to run code from the video BIOS."
url="http://www.srcf.ucam.org/~mjg59/vbetool/"
depends=()
makedepends=('pciutils' 'zlib')
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump $url | grep tar.gz | tail -n1 | sed 's/.*l_\(.*\).t.*/\1/' | sed 's/-/_/'"
source=($url/${pkgname}_${pkgver/_/-}.tar.gz)
sha1sums=('49c86aa6fb877f35a0b336d6aa1d6b204c2cc66f')

build()
{
	Fcd $pkgname-${pkgver/_1/} 	
	Fconf
	make LIBS="-lpci -lz" || return 1
	make DESTDIR=$startdir/pkg install
}

# optimization OK
