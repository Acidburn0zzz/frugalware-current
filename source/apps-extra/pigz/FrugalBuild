# Compiling Time: 0.02 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=pigz
pkgver=2.3.4
pkgrel=1
pkgdesc="A gzip implementation that can use parallel threads."
url="http://www.zlib.net/pigz"
depends=('zlib')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('98c30f710514c54ce8a31784347412eeec0f08eb')

build()
{
	Fcd $pkgname-$pkgver
	Fsed "-O3" "$CFLAGS" Makefile
	Fmake
	Fexerel /usr/bin/pigz
	Fln /usr/bin/pigz /usr/bin/unpigz
	Fdocrel pigz.{spec,pdf}
}

# optimization OK
