# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=fop
pkgver=0.20.5
pkgrel=1
pkgdesc="Formatting Objects Processor is a print formatter driven by XSL"
url="http://xmlgraphics.apache.org/fop/"
rodepends=('libgcj')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep Version|sed 's/.*n \(.*\)/\1/;q'"
# TODO: build it from source
source=(http://www.apache.org/dist/xmlgraphics/fop/fop-$pkgver-bin.tar.gz)
signatures=($source.asc)

build()
{
	Fsed 'build/' '' fop.sh
	sed '2itest "$FOP_HOME" || FOP_HOME=/usr/share/java/' fop.sh > fop
	Fexerel /usr/bin/fop
	Ffilerel lib/*.jar build/*.jar /usr/share/java/
}
