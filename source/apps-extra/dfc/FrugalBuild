# Compiling Time: 0.02 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=dfc
pkgver=2.4.0
pkgrel=1
pkgdesc="Display file system space usage using graph and colors"
url="http://projects.gw-computing.net/projects/dfc"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/files"
source=(http://projects.gw-computing.net/attachments/download/39/$pkgname-$pkgver.tar.gz)
sha1sums=('86391daa8638f276dec1ac58a4e45a0f7ca6372f')

build() {
	Fcd
	make || Fdie
	make PREFIX="$Fdestdir/usr" MAN_DEST="$Fdestdir/usr/share/man/man1" install || Fdie
}


# optimization OK
