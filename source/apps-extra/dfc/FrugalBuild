# Compiling Time: 0.01 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=dfc
pkgver=2.3.0
pkgrel=1
pkgdesc="Display file system space usage using graph and colors"
url="http://projects.gw-computing.net/projects/dfc"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/files"
source=(http://projects.gw-computing.net/attachments/download/30/$pkgname-$pkgver.tar.gz)
sha1sums=('a911667285268c331e13400a73d16d355a094c62')

build() {
	Fcd
	make || Fdie
	make PREFIX="$Fdestdir/usr" MAN_DEST="$Fdestdir/usr/share/man/man1" install || Fdie
}

