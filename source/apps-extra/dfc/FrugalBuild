# Compiling Time: 0 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=dfc
pkgver=2.1.0
pkgrel=1
pkgdesc="Display file system space usage using graph and colors"
url="http://projects.gw-computing.net/projects/dfc"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/files"
source=(http://projects.gw-computing.net/attachments/download/24/$pkgname-$pkgver.tar.gz)
sha1sums=('1e2b63bf75388c2879e7202d2e582a7e9b26c87f')

build() {
	Fcd
	make || Fdie
	make PREFIX="$Fdestdir/usr" MAN_DEST="$Fdestdir/usr/share/man/man1" install || Fdie
}

