# Compiling time: 2.72 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=gdal
pkgver=1.3.2
pkgrel=3
pkgdesc="GDAL - a translator library for raster geospatial data formats"
url="http://iweb.gdal.org"
license="MIT licence; Copyright by Frank Warmerdam"
depends=('postgresql' 'unixodbc' 'libtiff' 'libjpeg' 'mysql' 'geos' 'libpng')
archs=('i686' 'x86_64')
groups=('apps-extra')
up2date="lynx -dump $url/dl/ |grep $pkgname-[0-9\.]*\.tar.gz$ |tail -n 1 |sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/dl/$pkgname-$pkgver.tar.gz)
sha1sums=('eda247dd96558ff79f843fb7b4393bf62cb01644')
Finclude python

build() {
	Fbuild --prefix=$Fdestdir/usr --exec-prefix=$Fdestdir/usr --bindir=$Fdestdir/usr/bin \
	--datadir=$Fdestdir/usr/share/gdal --includedir=$Fdestdir/usr/include/gdal \
	--libdir=$Fdestdir/usr/lib --mandir=$Fdestdir/usr/man \
	--with-pymoddir=$Fdestdir/usr/lib/python$_F_python_ver/site-packages \
	--with-static-proj4=/usr/include --enable-shared=yes --with-gnu-ld
}

# optimization OK
