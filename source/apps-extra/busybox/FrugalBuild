# Compiling Time: 0.38 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=busybox
pkgver=1.2.2.1
pkgrel=2
pkgdesc="Utilities for rescue and embedded systems."
url="http://www.busybox.net/"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.busybox.net/downloads/?C=M;O=D' |grep [0-9].tar.bz2|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=(http://www.busybox.net/downloads/busybox-$pkgver.tar.bz2 config)
sha1sums=('41683c6a31f365ac884b84a376533d9ff372c05e' \
	  'ab32c5d4472db27dfd1366a0b2b0fc037cb0b781')

build()
{
	Fcd
	cp $Fsrcdir/config .config
	Fmake
	make PREFIX=$Fdestdir/usr/share/busybox install || return 1
}

# optimization OK
