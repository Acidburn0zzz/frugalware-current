pkgname=kmscon
pkgver=1.geceaa5e
pkgrel=1
pkgdesc="A modern terminal emulator that improves the Linux virtual console."
depends=('libgles' 'pango' 'systemd')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_github_author=dvdhrm
_F_github_devel=yes
Finclude github

build()
{
	Funpack_scm
	Fexec mkdir m4 || Fdie
	Fautoreconf
	Fbuild --disable-debug
}

# optimization OK
