# Compiling Time: 0.15 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=kmscon
pkgver=1.g1356e72
pkgrel=1
pkgdesc="A modern terminal emulator that improves the Linux virtual console."
depends=('libgles' 'pango' 'systemd' 'libxkbcommon')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_github_author=dvdhrm
_F_github_devel=yes
Finclude github

build()
{
	rm -rf $pkgname || Fdie
	Funpack_scm
	Fexec mkdir m4 || Fdie
	Fautoreconf
	Fbuild --disable-debug
	chmod u+s $Fdestdir/usr/bin/kmscon || Fdie
}

# optimization OK
