# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=squashfs
pkgver=3.1_r2
pkgrel=1
pkgdesc="A highly compressed read-only filesystem for Linux."
depends=('zlib')
groups=('apps-extra')
archs=('i686')
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=63835|grep squashfs[0-9]|sed 's/[^]]*][^]]*]squashfs\([^ ]*\) .*/\1/;s/-/_/g;q'"
source=(${source/squashfs-/squashfs} squashfs-3.1_r2-cflags.diff)

build()
{
	Fcd "squashfs${pkgver/_/-}/squashfs-tools"
	Fpatchall
	Fmake
	Fexerel /sbin/mksquashfs
	Fexerel /sbin/unsquashfs
}

# optimization OK

sha1sums=('c01b4e9a3e4e94dd3ab964d223f5f1e5a99777c5' \
	  '24ae81ebb4a8c5babf9bdcd972ae3effb3afb48b')
