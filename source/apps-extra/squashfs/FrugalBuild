# Compiling Time: 0 SBU
# Maintainer: Kooda <kooda@upyum.com>

pkgname=squashfs
pkgver=4.1
pkgrel=1
pkgdesc="A compressed read-only filesystem."
depends=('xfsprogs-attr')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_sourceforge_subdir="/$pkgname/"
_F_sourceforge_sep="None"
Finclude sourceforge
sha1sums=('7f9b1f9839b3638882f636fd170fd817d650f856')
_F_cd_path="$pkgname$pkgver/$pkgname-tools"

build()
{
	Fmkdir /usr/bin
	Fmake
	Finstallrel 755 mksquashfs /usr/bin
	Finstallrel 755 unsquashfs /usr/bin
}
