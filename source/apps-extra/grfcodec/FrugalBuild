# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=grfcodec
pkgver=r2306
pkgrel=1
pkgdesc="A utility for encoding and decoding the graphic files used by openttd."
url="http://www.openttd.org/en"
depends=('libboost')
makedepends=('boost' 'upx')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flastarchive $url/download-$pkgname -source.tar.bz2"
source=(http://binaries.openttd.org/extra/$pkgname/$pkgver/$pkgname-$pkgver-source.tar.bz2)
sha1sums=('d66518e6dc98555d9f242309c1c5adef1f2dbea0')

build() {
	Fmake
	Fexerel /usr/bin/grfcodec
	Fexerel /usr/bin/grfmerge
	Fexerel /usr/bin/grfdiff
}

# optimization OK
