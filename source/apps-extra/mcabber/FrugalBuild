# Compiling Time: 0.08 SBU
# Maintainer: Pingax <pingax@frugalware.fr>
# Contributorr: Devil505 <devil505linux@gmail.com>

pkgname=mcabber
pkgver=1.0.3
pkgrel=1
pkgdesc="is a small Jabber console client, includes features: SSL, PGP, MUC, UTF8"
url="http://mcabber.com"
depends=('glib2' 'gpgme' 'openssl' 'ncurses>=6.0-9' 'loudmouth>=1.5.3' \
	 'libotr' 'aspell')
makedepends=('pkgconfig')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/files/"
source=($url/files/$pkgname-$pkgver.tar.bz2)
Fconfopts+=" --enable-hgcset --mandir=/usr/share/man --enable-otr \
	--enable-aspell --enable-modules"
sha1sums=('d481d11ab1a738293984e0736ef7bb35f95eca37')

build() {
	Fbuild
	Fmkdir /usr/share/mcabber/example
	Ffilerel mcabberrc.example /usr/share/mcabber/example/mcabberrc
}

# optimization OK
