# Compiling Time: 14.20 SBU
# Maintainer: boobaa <boobaa@frugalware.org>

pkgname=mongodb
pkgver=3.2.11
pkgrel=1
pkgdesc="A scalable, high-performance, open source NoSQL database"
url="http://www.mongodb.org"
up2date="lynx -dump $url/downloads | grep src- -m1 | sed 's/.*-src-r\(.*\)\.tar.*/\1/'"
groups=('apps-extra')
archs=('x86_64')
depends=('libstdc++>=6.2.1-8' 'openssl>=1.0.2-12' 'pcre' 'zlib' 'yaml-cpp' 'snappy' 'libboost>=1.61.0-3' 'libpcap')
makedepends+=('scons' 'boost>=1.61.0-3')
source=(http://downloads.mongodb.org/src/mongodb-src-r$pkgver.tar.gz \
	boost.patch mongodb-3.2.4-boost-1.60.patch mongodb-3.2.0-fix-scons.patch)
sha1sums=('aebc7af3179be13465221dac6d54ebda7a8d7722' \
          '229f469533249e30e525482a17b69ed355bd2667' \
          '49d64e83ede6c9d5765bfbc2ab172b8fe946480d' \
          'e3d5011c899b1e37e15c09442cdd6ba8864b1cfd')
options+=('static')

## TODO: - some default conf ?
##       - systemd service ?
##       - fix C/CXX system flags

build()
{
		### F*** this scons
		Fcd $pkgname-src-r$pkgver
		Fpatchall
		## this is gnu++11 code while rest is c++11 .. ofc won't compile
		sed -i 's|ASSERT_PARSES(double, "0xabcab.defdefP-10", 0xabcab.defdefP-10);||' src/mongo/base/parse_number_test.cpp || Fdie
		export SCONSFLAGS="$MAKEFLAGS"
		OPT="--disable-warnings-as-errors \
			--ssl --use-system-zlib \
			--use-system-pcre \
			--use-system-yaml \
			--use-system-snappy \
			--use-system-boost \
			--experimental-decimal-support=off"

		#if [ "$CARCH" == "i686" ]; then
		#	## 32bit won't compile with this on
		#	OPT+=" --wiredtiger=off"
		#fi

		scons all $OPT || Fdie
		scons --prefix $Fdestdir/usr $OPT --nostrip install || Fdie
}

# optimization OK
