# Compiling Time: 14.20 SBU
# Maintainer: boobaa <boobaa@frugalware.org>

pkgname=mongodb
pkgver=3.4.4
pkgrel=3
pkgdesc="A scalable, high-performance, open source NoSQL database"
url="http://www.mongodb.org"
up2date="lynx -dump $url/downloads | grep src- -m1 | sed 's/.*-src-r\(.*\)\.tar.*/\1/'"
groups=('apps-extra')
archs=('x86_64')
depends=('libstdc++>=6.2.1-8' 'openssl>=1.0.2-12' 'pcre' 'zlib' 'yaml-cpp' 'snappy>=1.1.6' 'libboost>=1.61.0-3' 'libpcap')
makedepends+=('scons' 'boost>=1.61.0-3')
source=(http://downloads.mongodb.org/src/mongodb-src-r$pkgver.tar.gz)
sha1sums=('6f9f2d8a3c1c2f4089fd03f8be0b86ff0431d955')
options+=('static')

## TODO: - some default conf ?
##       - systemd service ?
##       - fix C/CXX system flags

build()
{
		### F*** this scons
		Fcd $pkgname-src-r$pkgver
		Fpatchall
		sed -i -e 's|ASSERT_PARSES(double, "0xabcab.defdefP-10", 0xabcab.defdefP-10);||' src/mongo/base/parse_number_test.cpp || Fdie
		export SCONSFLAGS="$MAKEFLAGS"
		OPT="--disable-warnings-as-errors \
			--ssl --use-system-zlib \
			--use-system-pcre \
			--use-system-yaml \
			--use-system-snappy \
			--use-system-boost"

		Fexec scons all $OPT || Fdie
		Fexec scons --prefix $Fdestdir/usr $OPT --nostrip install || Fdie
}

# optimization OK
