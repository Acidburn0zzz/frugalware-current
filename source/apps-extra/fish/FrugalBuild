# Compiling Time: 0.13 SBU
# Maintainer: James Buren <ryuo@frugalware.org>
# Contributor: BMH1980 <bmh1980@frugalware.org>

options+=('asneeded')

pkgname=fish
pkgver=2.0.0
pkgrel=1
pkgdesc="fish is a user friendly command line shell for UNIX-like operating systems."
url="http://fishshell.com"
depends=('ncurses')
makedepends=('doxygen' 'groff')
groups=('apps-extra')
archs=('i686' 'x86_64')
backup=('etc/fish/config.fish')
license="GPL2"
up2date="Flasttar $url"
source=($url/files/$pkgver/$pkgname-$pkgver.tar.gz)
_F_cd_path="$pkgname"
Fconfopts="docdir=/usr/share/doc/$pkgname-$pkgver --prefix=/usr"

sha1sums=('2d28553e2ff975f8e5fed6b266f7a940493b6636')

build() {
	Fcd
	Fautoreconf
	Fbuild
}

# optimization OK
