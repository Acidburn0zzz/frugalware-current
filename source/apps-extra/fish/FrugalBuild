pkgname=fish
pkgver=1.21.12
pkgrel=1
pkgdesc="fish is a user friendly command line shell for UNIX-like operating systems."
url="http://roo.no-ip.org/fish/"
depends=('ncurses')
makedepends=('doxygen' 'groff')
groups=('apps-extra')
archs=('i686' 'x86_64')
license="GPL2"
up2date="lynx -dump $url|grep -m 1 -o '[0-9\.]\+[0-9]\.tar\.bz2'|grep -o '[0-9\.]\+[0-9]'"
source=($url/files/$pkgver/$pkgname-$pkgver.tar.bz2)
sha1sums=('8ab4da3ffc4acb5cd56e395bdbef83eb6c8cf8ab')

build()
{
	Fbuild docdir=/usr/share/doc/$pkgname-$pkgver --without-xsel \
	--prefix=/ --mandir=/usr/man --datadir=/usr/share
}

# optimization OK
