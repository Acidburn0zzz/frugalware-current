# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=efte
pkgver=1.0
pkgrel=1
pkgdesc="A fast and configurable programmer's text editor."
depends=('ncurses' 'libstdc++')
groups=('apps-extra')
_F_sourceforge_ext=.tar.bz2
Finclude sourceforge cmake
archs=('i686')
sha1sums=('7e60ff808d090cbb46f1de8bc4f5aaf526c6676a')

build() {
    Fsed "-Wall" "-Wall ${CXXFLAGS}" src/CMakeLists.txt
    CMake_build
    Frm /usr/bin/v$pkgname
    Frm /usr/share
    Fmv /usr/bin/n$pkgname /usr/bin/$pkgname
    Fdoc $_F_cd_path/Artistic
}

# optimization OK
