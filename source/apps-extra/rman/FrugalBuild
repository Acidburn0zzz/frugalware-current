# Compiling Time: 0.25 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=rman
pkgver=3.2
pkgrel=1
pkgdesc="PolyGlotMan is a Man page translator"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="polyglotman"
Finclude sourceforge
url="http://polyglotman.sourceforge.net"
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=4293'|grep -m1 'rman-\(.*\).tar.gz'|sed 's/.*an-\(.*\).t.*/\1/'"
sha1sums=('d3b2889b5feabb78a0422a1f5d3ae9fdf0333b79')

build()
{
	Fcd
	make
	Fexe $pkgname-$pkgver/rman /usr/bin/rman
	Ffilerel rman.1 /usr/man/man1/rman.1
}

# optimization OK
