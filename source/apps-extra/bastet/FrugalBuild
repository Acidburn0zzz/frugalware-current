# Compiling Time: 0.01 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=bastet
pkgver=0.41
pkgrel=1
pkgdesc="Bastard tetris for console"
url="http://fph.altervista.org/prog/bastet.html"
depends=(ncurses)
groups=(apps-extra)
archs=('i686' 'x86_64' 'ppc')
up2date="Flasttar $url"
source=("http://fph.altervista.org/prog/files/$pkgname-$pkgver.tgz")
sha1sums=('644a0f76adedef84946159520c1639ff0c6c47ec')

build()
{
	Fcd
	Fsed "/usr/bin/" "$Fdestdir/usr/bin/" Makefile
	Fsed "GAME_USER=games" "GAME_USER=root" Makefile
	Fsed "/var/games/" "$Fdestdir/var/games/" Makefile
	Fmake
	Fmkdir usr/bin
	Fmkdir var/games
	Fmakeinstall
}
