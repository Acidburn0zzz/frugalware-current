# Compiling time: 0.03 SBU
# Maintainer: CSÉCSY László <boobaa@frugalware.org>

pkgname=metapixel
pkgver=1.0.1
pkgrel=1
pkgdesc="a program for generating photomosaics"
url="http://www.complang.tuwien.ac.at/~schani/metapixel/"
depends=('libpng' 'libjpeg')
rodepends=('perl')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.complang.tuwien.ac.at/~schani/metapixel/'|grep tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://www.complang.tuwien.ac.at/~schani/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('30e675c0929a2575e2fb28570ed111bbff7c6174')

build()
{
	Fsed "/usr/local" "$Fdestdir/usr"  Makefile
	Fsed "OPTIMIZE = -O2" "OPTIMIZE = ${CFLAGS}" Makefile
	Fmkdir /usr/man/man1
	Fbuild
}

# optimalization OK
