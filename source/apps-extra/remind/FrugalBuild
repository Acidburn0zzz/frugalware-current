pkgname=remind
pkgver=03.01.09
pkgrel=1
pkgdesc="A sophisticated calendar and alarm program."
url="http://www.roaringpenguin.com/products/remind"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=(http://www.roaringpenguin.com/files/download/remind-$pkgver.tar.gz)
sha1sums=('275f5375ac74269fa23df0c7de7aa9226e222e8a')

build()
{
	Fmake
	Fmakeinstall mandir=$Fdestdir/usr/share/man
}

# optimization OK
