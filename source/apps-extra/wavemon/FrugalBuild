# Compiling Time: 0.06 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname=wavemon
pkgver=0.7.6
pkgrel=3
pkgdesc="Ncursed-based monitoring application for wireless network devices"
url="http://eden-feed.erg.abdn.ac.uk/wavemon"
depends=('ncurses>=6.0-3' 'libpcap')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_github_author='uoaerg'
_F_github_tag_v='y'
Finclude github
sha1sums=('adf17a922d7c420e6c5e28be96bc7f498a5a2f44')

build() {
	Fcd
	Fconf --prefix=/usr
	make CFLAGS="$CFLAGS -O2 -Wall -pthread" || Fdie
	make DESTDIR=$Fdestdir install || Fdie
}

# optimization OK
