# Compiling Time: 0.05 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=mcrypt
pkgver=2.6.4
pkgrel=1
pkgdesc="replacement of the old unix crypt(1)"
url="http://mcrypt.sourceforge.net/"
depends=('libmcrypt' 'mhash' 'zlib')
groups=('apps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=87941|grep mcrypt|grep -v libmcrypt|grep -m1 '.tar.gz'|sed 's/.*-\(.*\).t.*/\1/'"
sha1sums=('6541caeab47999789595ad714b741fdf98c77aca')

build()
{
	Fcd
	for i in Makefile.am Makefile.in
	do
		Fsed '$(bindir)' '$(DESTDIR)$(bindir)' $i
	done
	Fbuild
}

# optimization OK
