pkgname=cdrkit
pkgver=1.1.2
pkgrel=1
pkgdesc="portable command-line CD/DVD recorder software"
url="http://cdrkit.org/"
depends=('libcap')
makedepends=('cmake')
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump 'http://debburn.alioth.debian.org/?C=M;O=D'|grep -- '-[0-9\.]*tar.gz$'|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=(http://debburn.alioth.debian.org/cdrkit-$pkgver.tar.gz)
sha1sums=('b8d8b654d93362ef00574d0585cb8d4467e6c4c7')

build()
{
	Fmake
	make PREFIX=$Fdestdir install || return 1
}

# optimization OK
