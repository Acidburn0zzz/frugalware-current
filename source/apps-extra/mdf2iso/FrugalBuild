pkgname=mdf2iso
pkgver=0.3.0
pkgrel=1
pkgdesc="Converts mdf/mds images to bin/cue or iso image"
url="http://mdf2iso.berlios.de/"
dl_url="http://download.berlios.de/$pkgname/"
source=("$dl_url$pkgname-$pkgver-src.tar.gz")
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="links -dump https://developer.berlios.de/project/showfiles.php?group_id=2545|grep -m1 .src.tar.bz2|sed 's/.*-\(.*\).src.tar.bz2 .*/\1/'"
sha1sums=('949d4fa0bb1e40ca17842a265d8ed813bac4917a')

build()
{
	Fcd $pkgname
	Fbuild
}

