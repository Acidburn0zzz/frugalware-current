# Compiling Time: 0.33 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=containerd
pkgver=0.2.5
pkgrel=1
pkgdesc="open and reliable container runtime"
archs=('x86_64')
groups=('apps-extra')
depends=('glibc')
makedepends=('go>=1.6' 'git')
_F_github_author="docker"
_F_github_tag_v="y"
Finclude github
sha1sums=('aaf6fd1c5176b8575af1d8edf82af3d733528451')

build() {
	export GOPATH="$Fsrcdir"
	unset LDFLAGS

	Fexec mkdir -p src/github.com/docker/
	Fexec mv $pkgname-$pkgver src/github.com/docker/$pkgname
	Fexec cd src/github.com/docker/$pkgname
	Fmake

	Fexe src/github.com/docker/containerd/bin/containerd usr/bin/containerd
	Fexe src/github.com/docker/containerd/bin/containerd-shim usr/bin/containerd-shim
	Fexe src/github.com/docker/containerd/bin/ctr usr/bin/ctr

}

# optimization OK
