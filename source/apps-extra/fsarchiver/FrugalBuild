# Compiling Time: 0.15 SBU
# Maintainer: exceed <exceed.cedric@gmail.com>

pkgname=fsarchiver
pkgver=0.6.2
pkgrel=1
pkgdesc="Save the contents of a file-system to a compressed archive file"
depends=('zlib' 'lzo' 'bzip2' 'libgcrypt' 'e2fsprogs' 'ntfs-3g>=2009.11.14')
Finclude sourceforge
groups=('apps-extra')
archs=('i686')
Fconfopts="${Fconfopts[@]} --disable-lzma"
sha1sums=('41d6cff17e1ecb149a8e335ecc99e4f00917c4b7')

build()
{
	Fsed "mke2fs -V" "/sbin/mke2fs -V" configure
	Fbuild
}


# optimization OK
