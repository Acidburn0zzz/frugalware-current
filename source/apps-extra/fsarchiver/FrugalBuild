# Compiling Time: 0.15 SBU
# Maintainer: exceed <exceed.cedric@gmail.com>

pkgname=fsarchiver
pkgver=0.6.1
pkgrel=1
pkgdesc="Save the contents of a file-system to a compressed archive file"
depends=('zlib' 'lzo' 'bzip2' 'libgcrypt' 'e2fsprogs' 'xfsprogs-attr')
Finclude sourceforge
groups=('apps-extra')
archs=('i686')
Fconfopts="${Fconfopts[@]} --disable-lzma"
sha1sums=('381cac2486827743587aca6ca42b94f37cae4bcc')

build()
{
	Fsed "mke2fs -V" "/sbin/mke2fs -V" configure
	Fbuild
}

