# Compiling Time: 0.01 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=cpulimit
pkgver=1.1
pkgrel=1
pkgdesc="CPU Usage Limiter for Linux"
url="http://marlon80.interfree.it/cpulimit/"
depends=('glibc')
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump http://marlon80.interfree.it/cpulimit/download.html|grep -m1 '.tar.gz'|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://marlon80.interfree.it/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('9f020c22d633e3f6289c69844bd7136c1f2704f1')

build()
{
	Fcd
	Fsed "-O2" "$CFLAGS" Makefile
	make || Fdie
	Fexerel /usr/sbin/$pkgname
}


# optimization OK
