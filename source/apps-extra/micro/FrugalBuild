# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=micro
pkgver=0.1.g66d448a
pkgrel=1
pkgdesc="A modern and intuitive terminal-based text editor"
groups=('apps-extra')
license=('MIT')
archs=('i686' 'x86_64')
depends=('glibc')
makedepends+=('go')
_F_github_author="zyedidia"
_F_github_devel="yes"
Finclude github

build() {
	Funpack_scm
	Fcd

        export GOPATH="$(pwd)"
        export PATH=$PATH:$GOROOT/bin
	Fexec make deps || Fdie

	Fbuild

	Fexerel bin usr/bin/micro
}


# optimization OK
