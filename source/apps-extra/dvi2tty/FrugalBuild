# Compiling time: 0.01 SBU
# Maintainer: Pingax <pingax@frugalware.fr>

pkgname=dvi2tty
pkgver=5.3.4
pkgrel=2
pkgdesc="Preview dvi-files on text-only devices"
depends=('glibc')
groups=('apps-extra')
archs=('x86_64')
_F_github_author="t-tk"
Finclude github
sha1sums=('64951ccbb4ec2bc22dad4ffb8086d64b0859f30d')
_F_cd_path=$pkgname-$pkgver

build() {
	Fsed "^\(CFLAGS =\)" "# \1" Makefile
	Fmake
	Fmkdir usr/bin
	Fman $_F_cd_path/dvi2tty.1
	Fman $_F_cd_path/disdvi.1
	Fexerel disdvi /usr/bin/
	Fexerel dvi2tty /usr/bin/
}

# optimization OK
