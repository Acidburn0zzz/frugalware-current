# Compiling Time: 0 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=fwupd
pkgver=1.0.3
pkgrel=1
pkgdesc='A simple daemon to allow session software to update firmware'
archs=('x86_64')
depends=('appstream-glib' 'libarchive' 'fwupdate' 'gpgme' 'colord' 'gsettings-desktop-schemas')
makedepends=('meson' 'gobject-introspection' 'polkit' 'gcab' \
	'appstream-glib' 'gpgme' 'docbook-sgml-dtd-4.1' \
	'docbook-utils' 'perl-sgmlspm' 'docbook-xml' \
	'docbook-xsl' 'opensp' 'openjade' 'gtk-doc' \
	'x11-protos' 'python3-pygobject3' 'python3-pillow' \
	'python3-pycairo' 'dejavu-ttf' 'help2man')
groups=('apps-extra')	
_F_github_author="hughsie"
_F_github_tag=yes
Finclude github
sha1sums=('d1e26629f71af95f95924df600a0285421820c7e')
options=('scriptlet')

build() {
	export LC_ALL=en_US.utf8
	Fcd
	Fexec rm -rf build || Fdie
	Fexec mkdir build || Fdie
	Fexec meson	--prefix=/usr \
			--sysconfdir=/etc \
			--localstatedir=/var \
			--buildtype=release build || Fdie

	Fexec ninja -v -C build || Fdie
	DESTDIR="$Fdestdir" ninja -v -C build install
}

# optimization OK
