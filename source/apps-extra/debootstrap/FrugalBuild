pkgname=debootstrap
pkgver=1.0.93
pkgextraver="+nmu2"
pkgrel=3
pkgdesc="Bootstrap a basic Debian system"
url="http://www.debian.org"
depends=('glibc')
makedepends=('binutils')
groups=('apps-extra')
archs=('x86_64')
source=(http://ftp.debian.org/debian/pool/main/d/$pkgname/${pkgname}_${pkgver}${pkgextraver}.tar.gz)
Fpkgversep="_"
up2date="Flasttar 'http://ftp.de.debian.org/debian/pool/main/d/debootstrap/?C=M;O=D'"
_F_cd_path="${pkgname}-${pkgver}${pkgextraver}"

build() {
	Fcd
	Fexec wget ftp://ftp.free.fr/mirrors/ftp.gentoo.org/distfiles/devices.tar.gz || Fdie
	Fmakeinstall
}

sha1sums=('be3cc777b978bf9af478485f0f531d924f5b630a')
