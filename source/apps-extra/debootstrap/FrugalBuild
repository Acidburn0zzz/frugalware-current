# Compiling time: 0.01 SBU
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=debootstrap
pkgver=0.3.3.3
srcver=`echo $pkgver | tr "_" "-"`
pkgrel=1
pkgdesc="Bootstrap a basic Debian system"
url="http://www.debian.org"
depends=('glibc')
makedepends=('binutils')
groups=('apps-extra')
archs=('i686' 'x86_64')
source=(http://ftp.debian.org/pool/main/d/debootstrap/debootstrap_${srcver}_all.deb)
up2date="lynx -dump 'http://ftp.debian.org/pool/main/d/debootstrap/?N=D' | grep debootstrap_.*.tar.gz | head -n 1 | sed 's/.*debootstrap_\(.*\).tar.gz.*/\1/; s/-/_/'"

build() {
	ar x debootstrap_${srcver}_all.deb && tar -xvzf data.tar.gz || Fdie
	cp -R usr/ $Fdestdir || Fdie
}

sha1sums=('67cce7ce8d5c5c777bd3f6a028cba8e1f0f23736')
