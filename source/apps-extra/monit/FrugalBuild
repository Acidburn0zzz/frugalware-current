	  '84361e2f83c1e1d2b931f3e2093ce30af216ab6e' \
	  '238ab46b032b9dd4060f11ca719885ff053542c4' \
	  '933901884a93535baf97c1a629dca9acec2fc82f')
Fconfopts="$Fconfopts --bindir=/usr/sbin"

build() {
