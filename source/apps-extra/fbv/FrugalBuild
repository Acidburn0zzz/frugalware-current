# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=fbv
pkgver=0.99
pkgrel=1
pkgdesc="A simple image viewer for the framebuffer."
url="http://s-tech.elsat.net.pl"
depends=('libjpeg' 'libpng')
groups=('apps-extra')
archs=('i686')
up2date="Flasttar $url/$pkgname"
source=($url/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('8c3a033bc764d1499f804eeb3525302fc8c2d650')
Fconfopts="--without-libungif"

build() {
        Fsed "-O2"           "${CFLAGS}" Makefile
        Fsed "-lungif -lX11" ""          Makefile
        Fmake
        Fexerel /usr/bin/$pkgname
        Fmanrel $pkgname.1
}

# optimization OK
