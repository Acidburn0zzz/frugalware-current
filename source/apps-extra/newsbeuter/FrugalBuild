# Compiling Time: 0.22 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=newsbeuter
pkgver=2.2
pkgrel=1
pkgdesc="A RSS feed reader for the text console with special Podcast support"
url="http://www.newsbeuter.org/"
depends=('sqlite3' 'curl' 'libxml2' 'stfl' 'libstdc++')
makedepends=('swig' 'gettext')
groups=('apps-extra')
archs=('i686')
up2date="Flasttar $url/download.html"
source=($url/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('5c2e960813c48ad26d2158cb6c380f0dbd42f8db')

build() {
  Fcd
  Fmake
  make prefix=$Fdestdir/usr install || Fdie
}

# optimization OK
