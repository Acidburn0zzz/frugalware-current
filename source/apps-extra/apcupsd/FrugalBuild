# Compiling Time: 0.21 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=apcupsd
pkgver=3.12.4
pkgrel=2
pkgdesc="A daemon for controlling APC UPSes."
Finclude sourceforge
url="http://www.apcupsd.com/"
depends=('freetype2' 'gd' 'libstdc++' 'mta')
backup=(etc/apcupsd/{apcupsd,hosts,multimon}.conf etc/httpd/conf/modules.d/apcupsd.conf)
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump $url |grep Stable|sed 's/.*: \([0-9\.]*\) (.*/\1/'"
source=($source apcupsd-3.12.4-1-exit_status.patch rc.apcupsd rc.apcupsd-hu.po \
	apcupsd.conf.off)

build()
{
	unset MAKEFLAGS
	APCUPSD_MAIL=/usr/sbin/sendmail SHUTDOWN=/sbin/shutdown \
		WALL=/usr/bin/wall Fbuild --with-upstype=usb --with-upscable=usb \
		--enable-usb --enable-cgi --enable-net --enable-pthreads \
		--sysconfdir=/etc/apcupsd --with-cgi-bin=/var/www/apcupsd
	Frcd2
	Ffile /etc/httpd/conf/modules.d/apcupsd.conf.off
}

sha1sums=('a36212d9634d36beda2318d85b882209763f2473'\
          'd024e830f85e40df1b5b0df50dd3aa25a19d73fc'\
          '00bf37801558c4219499d48747b657bf60f38f73'\
          'cb0e3f02874078a7fbd38429f3f59a45b057b163'\
          'd561f5535022e22a6a22514b13a95cdcec61e881')
# optimization OK
