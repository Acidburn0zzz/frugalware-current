# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=fop-devel
pkgver=0.93
pkgrel=1
pkgdesc="Formatting Objects Processor is a print formatter driven by XSL"
url="http://xmlgraphics.apache.org/fop/"
rodepends=('java-gcj-compat')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep ']Version' |sed -n 's/.*n \(.*\)/\1/;$ p'"
# TODO: build it from source
source=(http://www.apache.org/dist/xmlgraphics/fop/fop-$pkgver-bin-jdk1.4.tar.gz)
signatures=($source.asc)

build()
{
	Fcd fop-$pkgver
	Fsed 'build/' '' fop
	sed -i '2itest "$FOP_HOME" || FOP_HOME=/usr/share/java/' fop
	Fexerel /usr/bin/fop
	Ffilerel lib/*.jar build/*.jar /usr/share/java/
}
