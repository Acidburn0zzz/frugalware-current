# Compiling Time: 0.66 SBU
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=kdissert
pkgver=1.0.6
pkgrel=1
pkgdesc="A mindmapping-like tool to help students to produce complicated documents very quickly and efficiently"
url="http://freehackers.org/~tnagy/kdissert/"
depends=('kdelibs')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
source=(http://www.freehackers.org/~tnagy/kdissert/$pkgname-$pkgver-waf.tar.bz2)
up2date="lynx -dump http://freehackers.org/~tnagy/kdissert/|grep -m1 'kdissert-\(.*\)-waf.tar.bz2'|sed 's/.*ert-\(.*\)-waf.*t.*/\1/'"
sha1sums=('841c8fa7bdf62bfd2bf7368e7316cebc28de51f1')

build() {
	Fcd $pkgname-$pkgver-waf
	tar xjvf miniwaf.tar.bz2 || return 1
	./waf.py configure || return 1
	./waf.py || return 1
	./waf.py --destdir=$Fdestdir install || return 1
}
