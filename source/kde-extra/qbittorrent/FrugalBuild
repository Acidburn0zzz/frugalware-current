# Last Modified: Fri, 06 Oct 2006 04:03:32 +0200
# Compiling Time: 0.44 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qbittorrent
pkgver=0.6.1
pkgrel=2
pkgdesc="A Bittorrent client."
depends=('qt4>=4.2.0-3' 'rblibtorrent' 'curl' 'python')
groups=('kde-extra')
archs=('i686')
Finclude sourceforge
url="http://www.qbittorrent.org/"
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=163414|grep -m1 'tar.gz'|sed 's/.*-\(.*\).t.*/\1/'"
source=(${source[@]} frugalware.patch)
sha1sums=('e777d1328d5bc01362fbde51e5b23a22b942686e' \
          'eb047d310bb0fb7c462fde459f29283d7d76b24b')

## :S
unset QTDIR QMAKESPEC UIC_PATH
export QTDIR=/usr
export PATH=$PATH:$QTDIR/bin
export QMAKESPEC=$QTDIR/share/qt4/mkspecs/linux-g++
export UIC_PATH=$QTDIR/bin/uic

build()
{
	Fcd
	Fpatchall
	Fmake --qtdir=${QTDIR}
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
