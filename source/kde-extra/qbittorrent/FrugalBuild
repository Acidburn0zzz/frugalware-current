# Compiling Time: 0.44 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qbittorrent
pkgver=0.8.0
pkgrel=1
pkgdesc="A Bittorrent client."
depends=('qt4>=4.2.1' 'rblibtorrent>=0.11' 'curl>=7.16.0' 'python>=2.5')
groups=('kde-extra')
archs=('i686' 'x86_64')
_F_sourceforge_broken_up2date=1
Finclude sourceforge
options=('force')
url="http://www.qbittorrent.org/"
source=($source frugalware.patch)
sha1sums=('226764fd92e43291b91e88666c832ba4d5af3a14' \
          'caeab2823a20295fe3146ec632215956a774b993')


build()
{
	Fcd
	source /etc/profile.d/qt4.sh.off
	Fpatchall
	Fmake --prefix=/usr --qtdir=/usr
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
