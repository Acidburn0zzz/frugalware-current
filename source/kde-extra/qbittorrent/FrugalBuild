# Compiling Time: 0.44 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qbittorrent
pkgver=20061114
pkgrel=1
pkgdesc="A Bittorrent client."
depends=('qt4>=4.2.1' 'rblibtorrent>=0.11' 'curl>=7.16.0' 'python>=2.5')
groups=('kde-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
url="http://www.qbittorrent.org/"
#up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=163414|grep -m1 'tar.gz'|sed 's/.*-\(.*\).t.*/\1/'"
up2date="$pkgver" ## TMP
source=(http://ftp.frugalware.org/pub/other/sources/$pkgname/$pkgname-$pkgver.tar.bz2 \
	frugalware.patch)
sha1sums=('fb39dc7c615098fd044b4c8d93b49139be7ec344' \
          'caeab2823a20295fe3146ec632215956a774b993')

build()
{
	Fcd
	source /etc/profile.d/qt4.sh.off
	Fpatchall
	Fmake --prefix=/usr --qtdir=/usr
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
