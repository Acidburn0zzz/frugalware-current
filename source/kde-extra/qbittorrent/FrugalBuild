# Compiling Time: 0.44 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qbittorrent
pkgver=0.9.1
pkgrel=1
pkgdesc="A Bittorrent client."
depends=('qt4>=4.2.3-2' 'rblibtorrent>=0.12' 'curl>=7.16.1-2' 'python>=2.5')
groups=('kde-extra')
archs=('i686' 'x86_64')
_F_sourceforge_broken_up2date=1
Finclude sourceforge
url="http://www.qbittorrent.org/"
source=($source frugalware.patch)


build()
{
	Fcd
	source /etc/profile.d/qt4.sh.off
	Fpatchall
	./configure \
			--with-libtorrent-lib=/usr/lib/libtorrent \
			--with-libtorrent-inc=/usr/include \
			--with-libcurl-lib=/usr/lib \
			--with-libcurl-inc=/usr/include \
			--prefix=/usr \
			--qtdir=/usr \
			--verbose
	make || Fdie				
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

sha1sums=('95509abe463dd242f5459c29359d681eee2d3ced'\
          'ae0f7d347ae1e66d17488ac0e34e748dbfcd115b')
# optimization OK
