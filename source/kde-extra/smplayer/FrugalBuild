pkgname=smplayer
pkgver=0.5.21
pkgrel=1
pkgdesc="SMPlayer intends to be a complete front-end for MPlayer."
depends=('qt' 'libstdc++' 'libgcc' 'libgl' 'libxmu' 'libxi' 'libxdamage')
rodepends=('mplayer')
archs=('i686')
groups=('kde-extra')
Finclude kde sourceforge
url="http://smplayer.sourceforge.net/linux"
source=($source fix_it.patch)
up2date="lynx -dump $url/download_en.php |grep tar |sed -ne 's/.*-\(.*\).t.*/\1/;1p'"
sha1sums=('1d0d1f9a8f8f88695d2fadc2e61b92d5a8e9292d' \
          '91fbd60265a2af2b494d73f16f6d3abb068ff259')

build() {
	Fpatchall
	Fsed "DUMMY" "$pkgver" Makefile
	Fmake
	Fmakeinstall
}

# optimization OK
