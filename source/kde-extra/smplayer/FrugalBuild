# Compiling Time: 0.64 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=smplayer
pkgver=0.5.62
pkgrel=1
pkgdesc="SMPlayer intends to be a complete front-end for MPlayer."
makedepends=('qt4-linguist')
depends=('libqtgui' 'libqtnetwork' 'libqt3support')
rodepends=('mplayer')
archs=('i686')
groups=('kde-extra')
_F_sourceforge_ext=.tar.bz2
Finclude kde sourceforge
source=($source fix_it.patch)
up2date="lynx -dump http://smplayer.sourceforge.net/downloads.php?tr_lang=en |grep tar |sed -ne 's/.*-\(.*\).t.*/\1/;1p'"
sha1sums=('c4c0543faad37ef76067ef5219e472870b12ebab' \
          '9a06201f84586878e43a8e3dca5656fd96b83a28')

build() {
	Fpatchall
	Fsed "DUMMY" "$pkgver" Makefile
	Fmake
	Fmakeinstall
}

# optimization OK
