pkgname=smplayer
pkgver=0.5.0
pkgrel=1
pkgdesc="SMPlayer intends to be a complete front-end for MPlayer."
depends=('qt' 'glibc' 'libstdc++' 'libgcc' 'libgl' 'libxmu' 'libxi' 'libxdamage')
archs=('i686')
groups=('kde-extra')
Finclude kde sourceforge
url="http://smplayer.sourceforge.net/linux"
up2date="lynx -dump $url/download_en.php |grep tar |sed -ne 's/.*-\(.*\).t.*/\1/;1p'"
sha1sums=('e8a713ba3d9be8e8a24a1e08be930915491ed710')

build() {
	Fsed 'PREFIX=/usr/local' "PREFIX=$Fprefix" Makefile
	Fbuild
}

# optimization OK
