# Compiling Time: 5.48 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdeedu
pkgver=3.5.5
pkgrel=1
pkgdesc="Educational programs for KDE."
groups=('kde-extra')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.5')
makedepends=('python' 'doxygen' 'qt-docs')
Finclude kde
sha1sums=('38bc64e6e0683e3c0e0218c534d10dc3a4b6455a')

subpkgs=("$pkgname-docs")
subdescs=("Kdeedu Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
	Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                --disable-dependency-tracking \
                --disable-debug \
                --without-debug \
                --disable-warnings \
                --with-gnu-ld \
                --enable-gcc-hidden-visibility \
                --enable-final
	Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
