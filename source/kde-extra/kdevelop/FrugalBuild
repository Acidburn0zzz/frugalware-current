pkgname=kdevelop
pkgver=3.3.5
pkgrel=1
pkgdesc="The KDevelop integrated C/C++ application development environment"
groups=('kde-extra')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.5' 'kdesdk>=3.5.5' 'gettext' 'make' 'flex' 'graphviz' 'automake' 'autoconf' 'htdig' 'valgrind')
makedepends=('cvs' 'kde-apidox' 'qt-docs' 'doxygen')
conflicts=('kdevelop-docs')
Finclude kde
sha1sums=('5de503d814abc9c70130326b50484ebb5bac3364')

build()
{
	Fbuild \
                --enable-vba --enable-final \
                --with-apr-config=/usr/bin/apr-1-config \
                --with-apu-config=/usr/bin/apu-1-config \
		--disable-{dependency-tracking,debug,warnings} \
		--with-gnu-ld --enable-gcc-hidden-visibility \
		CXXFLAGS="$CXXFLAGS -Wno-deprecated" --without-debug
}

# optimization OK
