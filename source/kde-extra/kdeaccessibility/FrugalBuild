# Compiling Time: 2.37 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdeaccessibility
pkgver=3.5.5
pkgrel=1
pkgdesc="KDE accessibility programs"
groups=('kde-extra')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.5' 'akode' 'festival' 'libxtst')
[ "$CARCH" != "x86_64" ] && depends=(${depends[@]} 'mbrola')
[ "$CARCH" != "x86_64" ] && makedepends=(${makedepends[@]} 'txt2pho-hu')
Finclude kde
sha1sums=('328833053b8ec11185de0a097f990a839eba9567')

subpkgs=("$pkgname-docs")
subdescs=("Kdeaccessibility Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
	Fbuild  CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                --disable-dependency-tracking \
                --disable-debug \
                --without-debug \
                --disable-warnings \
                --with-gnu-ld \
                --enable-gcc-hidden-visibility \
		--enable-final --with-akode \
		--with-alsa \
           	--with-arts
	Fsplit $pkgname-docs usr/share/doc
}
# optimization OK
