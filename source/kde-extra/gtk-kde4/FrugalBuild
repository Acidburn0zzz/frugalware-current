# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=gtk-kde4
pkgver=0.9.3
pkgrel=1
pkgdesc="Allows you to change style, icons, font of GTK applications in KDE4"
_F_kde_id="74689"
Fpkgversep="(src)"
_F_cd_path="gtk-kde4"
Finclude kde
depends=("${depends[@]}" 'gtk-qt-engine' "kdebase-workspace>=$_F_kde_ver")
groups=(kde-extra)
archs=('i686' 'x86_64')
source=("http://kde-apps.org/CONTENT/content-files/$_F_kde_id-${pkgname}${Fpkgversep}${pkgver}.tar.gz" fix-permission.patch)
sha1sums=('4ec216366bc8218e6bd98947da38987605630494' \
          '037eae47a0c1ef7d7d8f73fe367a51245af15f94')

build() {
        Fcd
	Fpatchall
	## CMake_build, Fmake and Fmakeinstall are not working
	cmake -DCMAKE_INSTALL_PREFIX=/usr || Fdie
	make || Fdie
	make DESTDIR=$Fdestdir install || Fdie
}

