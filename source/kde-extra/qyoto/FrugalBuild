# Compiling Time: 0.36 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=qyoto
pkgrel=2
pkgdesc=".NET/Mono bindings for the Qt libraries."
groups=('kde-extra')
archs=('i686' 'x86_64')
Finclude mono kde
depends=("smokeqt>=$_F_kde_ver")
makedepends=("${makedepends[@]}" 'mono')
source=("${source[@]}" qyoto-qdbus-non-generic.patch)
sha1sums=("${sha1sums[@]}" \
          'd8df7c894c1188f38436db0ce58235d22e64ab53')

build() {
        unset MAKEFLAGS
        unset _F_KDE_LD_FLAGS
	Fmonoexport
	Fsed "gmcs" "mcs" cmake/FindMono.cmake
        KDE_build
	Fmonocleanup
}

# optimization OK
