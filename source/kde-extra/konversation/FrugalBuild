# Compiling Time: 1.57 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: Dániel Zámbó <rage@mtrr.hu>

pkgname=konversation
pkgver=1.2.1
pkgrel=2
pkgdesc="Konversation IRC client for KDE"
url="http://konversation.kde.org/"
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="Flasttar ftp://ftp.kde.org/pub/kde/stable/$pkgname/$pkgver/src/"
source=(ftp://ftp.kde.org/pub/kde/stable/$pkgname/$pkgver/src/$pkgname-$pkgver.tar.bz2)
up2date="Flasttar ftp://ftp.kde.org/pub/kde/stable/$pkgname/$pkgver/src/"
_F_kde_defaults=0
Finclude kde
depends=("${depends[@]}" "kdebase-runtime>=$_F_kde_ver" "kdepimlibs>=$_F_kde_ver" 'qca' 'libxscrnsaver')
makedepends=("${makedepends[@]}" 'pkgconfig')
sha1sums=('61c39178df65cb881ef98dd23c0e4c45056d93c5')

build() {
	mkdir $Fsrcdir/FWbuild || Fdie
	cd $Fsrcdir/FWbuild || Fdie
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed' \
		-DCMAKE_INSTALL_PREFIX=/usr || Fdie
	make || Fdie
	make DESTDIR=$Fdestdir install || Fdie
}
