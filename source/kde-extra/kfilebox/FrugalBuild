# Compiling time: 0.16 SBU
# Maintainer: Melko <lorddarthfener@gmail.com>

pkgname=kfilebox
pkgver=0.4.6
pkgrel=1
pkgdesc="KDE4 Dropbox client"
depends=('libkdecore' 'libqtsql')
makedepends=('kdelibs-compiletime')
_F_gnome_iconcache="y"
_F_sourceforge_dirname="kdropbox"
Finclude sourceforge gnome-scriptlet
archs=('i686' 'x86_64')
groups=('kde-extra')
sha1sums=('270ab273fce5fe449412c4fc996be599cbbaa77b')

build() {
    Fcd
    qmake || Fdie
    Fmake
    make INSTALL_ROOT=${Fdestdir} install || Fdie
    Fbuild_gnome_scriptlet
}
