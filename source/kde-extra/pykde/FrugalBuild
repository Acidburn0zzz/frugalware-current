pkgname=pykde
origname=PyKDE-snapshot20060422
pkgver=20060422
pkgrel=2
pkgdesc="A set of Python bindings for the KDE desktop environment."
url="http://www.riverbankcomputing.co.uk/pykde/index.php"
depends=('kdelibs>=3.5.2' 'sip>=4.4.1' 'pyqt' 'python')
options=('scriptlet')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.riverbankcomputing.co.uk/pykde/download.php|grep -m1 'snapshot'|sed 's/.*shot\(.*\).t.*/\1/'"
source=(http://www.riverbankcomputing.com/Downloads/PyKDE3/$origname.tar.gz)
sha1sums=('f65ce878130c3aec2326d9b61746a626268fd72b')

build()
{
	Fcd $origname
	python configure.py -j 2
	Fmake
	Fmakeinstall
}


# optimization OK
