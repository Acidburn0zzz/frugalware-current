pkgname=kdenlive
pkgver=0.7.8
pkgrel=1
pkgdesc="A Non-Linear Video Editing Suite for KDE"
_F_kde_defaults=0
_F_kde_reconf=1
Finclude sourceforge kde
depends=("${depends[@]}" "kdelibs>=$_F_kde_ver" "kdebase-runtime>=$_F_kde_ver" 'mlt-qimage>=0.5.6' 'mlt-sdl>=0.5.6' 'phonon' 'libqtscript')
makedepends=("${makedepends[@]}" 'gettext' 'kdelibs-compiletime')
groups=('kde-extra')
archs=('i686' 'x86_64')
sha1sums=('6fd6d50f9714974ec3f2ce04e8c978f839020f9a')

build() {
	Fcd
	# prevent issue with forward declaration
	Fsed "class QImage" "#include <QImage>" src/colorcorrection/vectorscopegenerator.h
	KDE_build
}
# optimization OK
