# Compiling Time: 5.23 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kvirc
pkgver=3.4.2
pkgrel=1
pkgdesc="Graphical Irc client for K Desktop"
depends=('kdenetwork')
groups=('kde-extra')
archs=('i686' 'x86_64')
Finclude kde
url="http://www.kvirc.net"
up2date="Flasttar http://www.kvirc.net"
source=(ftp://ftp.kvirc.ruo/pub/kvirc/$pkgver/source/$pkgname-$pkgver.tar.bz2)
sha1sums=('bbcae24f0b84d458688bc83fe6314d30963bc143')

unset MAKEFLAGS
## TODO: make it work *good* without KDE
build()
{
	 if [ "$CARCH" == "i686" ]; then
		conf="--with-ix86-asm"
	fi
	Fcd
	#sh ./autogen.sh || Fdie
	Fbuild \
		--with-big-channels \
		--with-aa-fonts \
		$conf
	Fmv /usr/share/services/irc.protocol \
		/usr/share/services/irc.protocol.kvirc
}


# optimization OK
