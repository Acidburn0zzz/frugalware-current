# Compiling Time: 0.22 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=acetoneiso2
pkgver=1.95_beta1
pkgrel=1
pkgdesc="A feature-rich and complete software application to manage CD/DVD images"
# lol GUI is qt4 and tools uses qt3 apps heh ..
depends=('qt4' 'libxi' 'libstdc++')
rodepends=('7zip' 'cdrdao' 'cdrtools' 'gpg-agent' 'gnupg' \
	'fuseiso' 'kdebase' 'pinentry-qt' 'coreutils' 'dvd+rw-tools') 
groups=('kde-extra')
archs=('i686')
replaces=('kcdemu')
_F_sourceforge_sep="_"
_F_sourceforge_broken_up2date=1
Finclude sourceforge
source=($source no-DOS-that-WAY.patch)
url="http://www.acetoneteam.org/central.html"
sha1sums=('5c92876aff48b22eb9e5f2e69a97dcb432c49cb4' \
          '4c413369c0957d3c759e4d8f1d19e3e14c363980')

build()
{
	Fcd AcetoneISO2
	Fpatchall
	find . -name ".svn"  | xargs rm -rf || Fdie
	cd src || Fdie
	/usr/bin/qmake *.pro || Fdie
	make || Fdie
	make INSTALL_ROOT=$Fdestdir install || Fdie
}
	



# optimization OK
