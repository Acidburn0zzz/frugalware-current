pkgname=kplayer
pkgver=0.6.0
pkgrel=1
pkgdesc="KPlayer is a KDE media player based on MPlayer."
depends=('kdelibs>=3.5.5')
rodepends=('mplayer')
groups=('kde-extra')
archs=('i686' 'x86_64')
license="GPL"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge kdeapps
source=(${source[@]} admin.patch)
sha1sums=('3e31e49f0869942c201b94485377b50226c0f671'\
          '73995264453b3b2c00285fd65eb023993e913cd4')

build()
{
	Fcd
	Fpatchall
	make -f admin/Makefile.common cvs || Fdie
	Fmake \
		--disable-debug \
		--without-debug \
		--with-gnu-ld \
		--enable-final
	Fmakeinstall
	Frm usr/share/services/{mms,mmst,mmsu,pnm,rtsp}.protocol
}

# optimization OK
