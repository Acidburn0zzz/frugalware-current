pkgname=kplayer
pkgver=0.6.0
pkgrel=1
pkgdesc="KPlayer is a KDE media player based on MPlayer."
url="http://kplayer.sourceforge.net/"
depends=('kdelibs')
rodepends=('mplayer')
groups=('kde-extra')
archs=('i686' 'x86_64')
license="GPL"
_F_sourceforge_ext=.tar.bz2
Finclude sourceforge kdeapps

build()
{
	Fbuild --disable-debug --without-debug --with-gnu-ld --enable-final
	Frm usr/share/services/{mms,mmst,mmsu,pnm,rtsp}.protocol
}
# optimization OK
sha1sums=('3e31e49f0869942c201b94485377b50226c0f671')
