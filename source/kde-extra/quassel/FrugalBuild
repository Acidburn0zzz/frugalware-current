pkgname=quassel
pkgver=0.12.2
pkgrel=1
pkgdesc="A modern, cross-platform, distributed IRC client."
url="http://quassel-irc.org"
depends=('qt5-base' 'qt5-script' 'qt5-webkit' 'libdbusmenu-qt5' 'qca-qt5')
makedepends=('qt5-tools')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/downloads"
source=(http://quassel-irc.org/pub/$pkgname-$pkgver.tar.bz2
	qt55.patch fixFindSSL.patch)
_F_gnome_iconcache=y
Finclude cmake gnome-scriptlet
sha1sums=('12e9a88597f724498c40a1548b5f788e7c40858c' \
          '57e814b7fb5c6c220f9372621a58ef8e3886db1a' \
          '2fb960dc3cafd0a90e52f10c67704ff9b312db71')
replaces=('conspire')


build() {
	CMake_build -DWITH_KDE=0 -DUSE_QT5=1
	Fbuild_gnome_scriptlet
}

# optimization OK
