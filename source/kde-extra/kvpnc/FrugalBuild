# Contributor: DeX77 <dex@dragonslave.de>

pkgname=kvpnc
pkgver=0.9.3
pkgextraver=kde4
pkgrel=1
pkgdesc="KVpnc is a KDE frontend for for various vpn clients."
url="http://home.gna.org/kvpnc"
license="GPL"
depends=('libxi' 'libstdc++' 'libxmu' 'libgcrypt' 'kdelibs>=4.3.4')
rodepends=('openvpn' 'pptp')
archs=('i686' 'x86_64')
groups=('kde-extra')
options=('scriptlet')
_F_cd_path="$pkgname-$pkgver-$pkgextraver"
_F_cmakekde_final=OFF
Finclude kde
up2date="lynx -dump http://home.gna.org/kvpnc/en/download.html| grep -m1 'Version'|sed 's/.*on //'"
source=(http://download.gna.org/kvpnc/$pkgname-$pkgver-$pkgextraver.tar.bz2 README.Frugalware)

build() {
	CMakeKDE_build
	Fdoc README.Frugalware
}

sha1sums=('3ffdd5fe8b740353f01d34265465c5833a93335f' \
          '3ec29363089636486b6b187965fa8487169021b3')
# optimization OK
