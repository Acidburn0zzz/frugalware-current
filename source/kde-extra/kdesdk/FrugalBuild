# Compiling Time: 6.36 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdesdk
pkgver=3.5.4
pkgrel=1
pkgdesc="KDE Software Development Kit."
groups=('kde-extra')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.4' 'db' 'subversion>=1.3.2')
makedepends=('doxygen' 'cvs' 'qt-docs')
Finclude kde
sha1sums=('0b178eaf22f669cae1ff585a887cbbc234460e68')

subpkgs=("$pkgname-docs")
subdescs=("Kdesdk Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
	Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                --disable-dependency-tracking \
                --disable-debug \
                --without-debug \
                --disable-warnings \
                --enable-new-ldflags \
                --with-gnu-ld \
                --enable-gcc-hidden-visibility \
                --enable-final\
            	--with-subversion \
            	--with-berkeley-db \
            	--with-apr-config=/usr/bin/apr-1-config \
            	--with-apu-config=/usr/bin/apu-1-config
	Fsplit $pkgname-docs usr/share/doc

}
# optimization OK
