pkgname=libktorrent
pkgver=1.0.3
pkgrel=1
pkgdesc="LibKTorrent is a BitTorrent library for KDE."
_F_cmakekde_final=OFF
Finclude kde
depends=("${depends[@]}" 'gmp' "libkdecore>=$_F_kde_ver" 'phonon' 'qca')
makedepends=("${makedepends[@]}" 'automoc4' 'boost' "kdelibs-compiletime>=$_F_kde_ver")
groups=('kde-extra')
archs=('i686' 'x86_64')
url="http://ktorrent.org/"
up2date="Flasttar 'http://ktorrent.org/?q=downloads'"
source=("${url}/downloads/4.0.3/$pkgname-$pkgver.tar.bz2")
sha1sums=('b2913924e56a5202827f3420e36ca9fb2ab3625e')

