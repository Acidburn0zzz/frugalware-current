pkgname=libktorrent
pkgver=1.0.5
pkgrel=2
pkgdesc="LibKTorrent is a BitTorrent library for KDE."
_F_cmakekde_final=OFF
Finclude kde
depends=("${depends[@]}" 'gmp>=5.0.1' "libkdecore>=$_F_kde_ver" 'phonon' 'qca')
makedepends=("${makedepends[@]}" 'automoc4' 'boost' "kdelibs-compiletime>=$_F_kde_ver")
groups=('kde-extra')
archs=('i686' 'x86_64')
url="http://ktorrent.org/"
up2date="Flasttar 'http://ktorrent.org/?q=downloads'"
_F_cd_path="$pkgname-$pkgver-3"
source=("${url}/downloads/4.0.5/$pkgname-$pkgver-3.tar.bz2")
sha1sums=('7e0551d731e18075eae8d8e92f9e5d5d26cc3f18')

# optimization OK
