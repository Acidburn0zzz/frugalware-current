# Contributor: Edo Hikmahtiar <firesand@gmail.com>

pkgname=ktrafficanalyzer
origname=KTrafficAnalyzer
pkgver=0.3.3
pkgrel=1
pkgdesc="KTrafficAnalyzer shows you your current network traffic."
url="http://wiki.suselinuxsupport.de/wikka.php?wakka=Downloads"
depends=('kdelibs>=3.5.2')
rodepends=('wireless_tools')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump $url|grep -m1 'KTrafficAnalyzer_'|sed 's/.*_\(.*\).tar.bz2.*/\1/'"
source=(http://wiki.suselinuxsupport.de/uploads/files/${origname}_$pkgver.tar.bz2 makefile.patch)
sha1sums=('39fcb5459d012f2fba9369c08dcbfef604117a42' \
          'f0283c1e63465b09556f4664f090fc0a591c3ae4')

build()
{
	Fcd ${origname}_${pkgver}
	Fbuild
	Fdesktop "/usr/bin/ktrafficanalyzer" "network" "System;"
        Fln /usr/bin/KTrafficAnalyzer /usr/bin/ktrafficanalyzer
}

# optimization OK
