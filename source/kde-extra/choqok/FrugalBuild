pkgname=choqok
pkgver=0.9.92
pkgrel=1
pkgdesc="A Twitter/identi.ca/laconica client for KDE 4."
url="http://choqok.gnufolks.org/"
depends=('kdelibs>=4.4.5' 'kdelibs-compiletime>=4.4.5' 'libqtdbus' 'libqtgui' 'libgcc' 'libice' 'libxext' \
	'libxrender' 'util-linux-ng' 'qca-ossl' 'qjson' 'qoauth')
makedepends=('automoc4')
Finclude cmake
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download/|grep -m1 '.tar.bz2'| sed 's/.*${pkgname}.//;s/.tar.bz2//;s/ \[\[.*//;'"
source=(http://d10xg45o6p6dbl.cloudfront.net/projects/c/$pkgname/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('49e8f67ea153e74c3ddbc6bc97452c2603177d36')

build()	{
	CMake_build
	Fmake
	make DESTDIR=$Fdestdir install || Fdie
}

# optimization OK
