# Compiling time: 1.09 SBU
# Maintainer: CSÉCSY László <boobaa@frugalware.org>

pkgname=noteedit
pkgver=2.8.1
pkgrel=1
pkgdesc="a free music score editor for Linux"
url="http://noteedit.berlios.de/"
depends=('kdelibs' 'tse3')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump 'http://noteedit.berlios.de/download.html/' | grep 'current stable version' | sed 's/.*version is \([0-9\.]\+\)\..*/\1/'"
source=(http://download.berlios.de/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('84f3f20acfb37042131df94435ad391a04ca73ba')

build()
{
	Fcd
	Fbuild --disable-debug --without-debug
	# --without-libs
	Fmv /usr/share/apps/noteedit/icons /usr/share/icons

}

# optimization OK
