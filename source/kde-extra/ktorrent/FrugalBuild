pkgname=ktorrent
pkgver=3.2.3
pkgrel=1
pkgdesc="KTorrent is a BitTorrent program for KDE."
depends=('kdelibs' 'libgl' 'libxmu' 'libxi' 'libxdamage' 'gmp' 'libboost'\
	'avahi' 'dbus' 'qca' 'taglib' 'libqt3support' 'kdepimlibs')
makedepends=('automoc4' 'boost')
groups=('kde-extra')
archs=('i686' 'x86_64')
_F_cmakekde_final=OFF
Finclude kde
url="http://ktorrent.org/"
up2date="lynx -dump "http://ktorrent.org/?q=downloads" | grep 'Stable KDE4' | sed -e 's/.*ktorrent-\([0-9.]*\).*/\1/'"
source=(${url}/downloads/$pkgver/$pkgname-$pkgver.tar.bz2)
sha1sums=('0fc456b8706df7105a4964f92f4a55d89f8009ec')

# optimization OK
