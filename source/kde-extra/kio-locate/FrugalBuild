# Compiling Time: 0.10 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kio-locate
pkgver=0.4.5
pkgrel=1
pkgdesc="kio-locate is a KDE I/O Slave for the locate command."
url="http://arminstraub.de/browse.php?page=programs_kiolocate"
depends=('kdelibs>=3.5.2')
makedepends=('scons')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump http://www.kde-apps.org/content/show.php?content=17201|grep -m1 'Version:'|sed 's/.*: \ //'"
source=(http://arminstraub.de/downloads/$pkgname/${pkgname}_${pkgver}.tar.gz)
sha1sums=('aa574b2bda816bf2df58d0058a52e7931a5b4da6')

build()
{
	Fcd
	scons configure prefix=/usr || return 1
	scons prefix=$Fdestdir/usr install || return 1
}

# optimization OK
