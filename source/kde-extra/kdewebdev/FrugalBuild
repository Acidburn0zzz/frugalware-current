# Compiling Time: 3.16 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdewebdev
pkgver=3.5.10
pkgrel=1
pkgdesc="A web development tool for the K Desktop Environment."
groups=('kde-extra')
archs=('i686' 'x86_64')
depends=('kdesdk>=3.5.10' 'libxslt' 'libxml2' 'tidy')
replaces=('quanta')
_F_kde_split_docs=1
_F_kde_reconf=1
Finclude kde
sha1sums=('71af1a5f3e835b3021b180271f8a4c1879b55b82')

subpkgs=("$pkgname-docs")
subdescs=("Kdewebdev Documentation")
subdepends=('')
subgroups=('docs-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
	Fbuild_kde_reconf
	Fbuild \
		--disable-gcc-hidden-visibility \
		--enable-new-ldflags --with-gnu-ld \
		--disable-dependency-tracking \
		--enable-editors
	Fbuild_kde_split_docs
}

# optimization OK
