# Compiling Time: 3.16 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdewebdev
pkgver=3.5.5
pkgrel=1
pkgdesc="A web development tool for the K Desktop Environment."
groups=('kde-extra')
archs=('i686' 'x86_64')
depends=('kdesdk>=3.5.5' 'libxslt' 'libxml2' 'tidy')
replaces=('quanta')
Finclude kde
sha1sums=('62a56041d1f1d8397cffdc0ef46d5fabed435ec2')

subpkgs=("$pkgname-docs")
subdescs=("Kdewebdev Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
        Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                --disable-dependency-tracking \
                --disable-debug \
                --without-debug \
                --disable-warnings \
                --with-gnu-ld \
                --enable-gcc-hidden-visibility \
                --enable-final
        Fsplit $pkgname-docs usr/share/doc
}


# optimization OK
