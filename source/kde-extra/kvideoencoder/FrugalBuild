# Compiling Time: 0.19 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: Edo Hikmahtiar <firesand@gmail.com>

pkgname=kvideoencoder
origname=KVideoEncoder
pkgver=0.07
pkgrel=1
pkgdesc="KVideoEncoder is a GUI for the mencoder."
depends=('kdelibs>=3.5.3')
rodepends=('mplayer' 'lsdvd')
groups=('kde-extra')
archs=('i686' 'x86_64')
license="GPL"
_F_sourceforge_dirname="$pkgname"
_F_sourceforge_name="$origname"
_F_sourceforge_ext=".tar.bz2"
_F_kdeapps_id="31385"
Finclude sourceforge kdeapps
source=($source makefile.patch $pkgname.png)
sha1sums=('a21a146c8f311d809ac01a4172ed9567df034b81' \
          'd93584b25415f1d4c47b8975742692de8939e3e3' \
          '27d20c4324c1f7f6ccec15c3829fee41cdee6ac5')

build()
{
	Fcd $origname-$pkgver
	Fconf
	Fpatchall
	make || return 1
	Fmkdir /etc
	Fmakeinstall
	Ffilerel ../$pkgname.png /usr/share/icons/hicolor/32x32/apps/$pkgname.png
	echo "Icon=kvideoencoder" >> $Fdestdir/usr/share/applications/kvideoencoder.desktop
}

# optimization OK
