# Compiling Time: 4.96 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=rosegarden
pkgver=1.4.0
pkgrel=1
pkgdesc="Rosegarden is a professional audio MIDI sequencer,score editor,music composition and editing environment."
url="http://www.rosegardenmusic.com/"
depends=('kdelibs>=3.5.4' 'dssi' 'liblrdf' 'liblo' 'jack')
makedepends=('scons')
conflicts=('rosegarden-4')
replaces=('rosegarden-4')
groups=('kde-extra' 'xmultimedia-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('60382f50c728a4b41f5d9e5e6a0780111b8ccb2f')

build ()
{

     Fcd
     scons configure prefix=/usr || Fdie
     scons || return 1
     scons prefix=$Fdestdir/usr  install || Fdie
}

# optimization OK
