pkgname=kdiff3
pkgver=0.9.95
pkgrel=1
pkgdesc="tool for comparison and merge of files and directories"
groups=('kde-extra')
archs=('i686' 'x86_64')
Finclude sourceforge kde
depends=("${depends[@]}" "kdebase>=$_F_kde_ver" "kdebase-runtime>=$_F_kde_ver")
url="http://kdiff3.sourceforge.net/"
sha1sums=('1fb27e8b42463ea23ad0169e20819352c1c476b7')

build()
{
	mkdir $Fsrcdir/$_F_cd_path/release || Fdie
	Fcd $_F_cd_path/release
	cmake .. -DCMAKE_INSTALL_PREFIX=$Fdestdir/usr
	make || Fdie
	make install || Fdie
}

