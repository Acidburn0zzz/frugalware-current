pkgname=kompose
pkgver=0.5.3
pkgrel=2
pkgdesc="A fullscreen task manager for KDE"
url="http://kompose.berlios.de/"
depends=('kdebase' 'imlib2')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump http://developer.berlios.de/projects/kompose|grep kompose|sed -n 's/ *[^ ]* \([0-9\.]*\) .*/\1/;1 p'"
source=(http://download.berlios.de/kompose/kompose-$pkgver.tar.bz2)
sha1sums=('caf81d472ad98d469600a19ddbf46e4f5fbac0eb')

build()
{
	Fbuild --disable-debug --without-debug
	Fmv /usr/share/apps/kompose/icons  /usr/share/icons
}
# optimalization OK

