pkgname=ksmoothdock
pkgver=4.1
pkgrel=1
pkgdesc="KSmoothDock is a cool desktop panel (like KDE's kicker) for KDE."
depends=('kdelibs>=3.5.4')
groups=('kde-extra')
archs=('i686' 'x86_64')
_F_cd_path="$pkgname"
Finclude kdeapps sourceforge
source=(${source[@]} admin.patch)
license="GPL 2"
sha1sums=('4ca54e3b1bf13bd9ce3a8085a90f78beb183ca35' \
          '52c998979fafbf52955519fc1c9998a7f3dd24fa')

build()
{
	Fpatchall
	make -f admin/Makefile.common cvs || Fdie
	Fmake
	Fmakeinstall
}

# optimization OK
