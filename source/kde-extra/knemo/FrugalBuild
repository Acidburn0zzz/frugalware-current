pkgname=knemo
pkgver=0.4.4
pkgrel=1
pkgdesc="KNemo is a KDE Network Monitor."
depends=('kdelibs>=3.5.3' 'wireless_tools')
makedepends=('unsermake')
groups=('kde-extra')
archs=('i686' 'x86_64')
_F_kdeapps_id="12956"
Finclude kdeapps
source=("http://www.kde-apps.org/content/files/12956-$pkgname-$pkgver.tar.bz2")
sha1sums=('1a64e14b8f84b7c2f7d11c6ac3a59caa0892f10c')

build()
{
	Fcd
	unsermake -f admin/Makefile.common cvs || return 1
	./configure --prefix=/usr --disable-debug --without-debug || return 1
	unsermake || return 1
	unsermake install prefix=$Fdestdir/usr || return 1
}
