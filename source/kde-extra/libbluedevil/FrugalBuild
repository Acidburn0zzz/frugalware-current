options+=('asneeded')

pkgname=libbluedevil
pkgver=1.9.4
pkgrel=2
pkgdesc="A Qt wrapper for bluez"
url="https://projects.kde.org/projects/playground/libs/libbluedevil"
depends=('bluez>=5.11' 'libqtdbus' 'libqtgui')
makedepends=('libxv') # cmake checks for Xvlib.h
groups=('kde-extra')
archs=('i686' 'x86_64')
_F_scm_type="git"
_F_scm_url="git://anongit.kde.org/libbluedevil.git"
_F_scm_tag="bluez5"
Finclude kde scm
up2date="Flastverdir $_F_kde_mirror/$_F_kde_folder/$pkgname"
source=('')

build()
{
	Funpack_scm	
        CMake_build
}

# optimization OK
