pkgname=taskjuggler
pkgver=2.2.0
pkgrel=3
pkgdesc="TaskJuggler is a modern and powerful project management tool."
url="http://www.taskjuggler.org/"
depends=('kdepim>=3.5.4')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://taskjuggler.org/download.php | grep -m1 Stable | sed 's/.*on \(.*\).)*/\1/'"
source=($url/download/${pkgname}-${pkgver}.tar.bz2 desktop_file_fix.patch)
license="GPL"
Finclude kdeapps
sha1sums=('5b5b5ef58f0436bedf04eb0de8d03b766bb8cc8c' \
          '0416ca6208221c12040a0ffce7b5758898a47885')

if [ "$CARCH" == "x86_64" ]; then
	export CXXFLAGS="$CXXFLAGS -fno-strict-aliasing -Wno-deprecated -fPIC"
else
	export CXXFLAGS="$CXXFLAGS -fno-strict-aliasing -Wno-deprecated"
fi

# optimization OK

