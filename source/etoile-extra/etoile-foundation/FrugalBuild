# Compiling Time: 0.05 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=etoile-foundation
pkgver=0.4.1
pkgrel=1
pkgdesc="Etoile Core Framework"
_F_etoile_name="EtoileFoundation"
_F_etoile_type="Frameworks"
Finclude etoile
depends=('libobjc>=4.4.0-6' 'gnustep-base>=1.18.0' \
	'gnustep-back>=0.16.0' 'gnustep-gui>=0.16.0')
archs=('i686')
sha1sums=('9ffa757bf42342fd6a2e7fa542b4521eee9c99d0')

build()
{
	Fetoile_build

	# Remove unwanted files
	Frm /usr/share/doc/$pkgname/INSTALL.*

	# Remove broken symlinks
	Frm /usr/lib/GNUstep/Local/Library/Documentation/Etoile{Thread,XML}
	Frm /usr/lib/GNUstep/Local/Library/Frameworks/EtoileFoundation.framework/EtoileFoundation.framework
	Frm /usr/lib/GNUstep/Local/Library/Frameworks/EtoileXML.framework/EtoileXML.framework
	Frm /usr/lib/GNUstep/Local/Library/Frameworks/EtoileThread.framework/EtoileThread.framework
}

