_F_lib32_name=libpulse
pkgver=8.0_1
rodepends=('lib32-json-c' 'lib32-dbus 'lib32-libsndfile' 'lib32-libasyncns' 'lib32-libtool'
	'lib32-libx11' 'lib32-orc' 'lib32-tdb 'lib32-speexdsp' 'lib32-fftw')
sha1sums=('a6ebf77f902aa255f7b35588f3af775d8f63e37f')

Finclude lib32
pkgrel=2

build() {
        Fbuildlib32

	Fmkdir etc/ld.so.conf.d/
	echo /usr/lib32/pulseaudio >> "$Fdestdir/etc/ld.so.conf.d/lib32-libpulse.conf" || Fdie

}

