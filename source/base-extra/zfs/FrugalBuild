# Compiling Time: 0 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=zfs
pkgver=0.7.0
pkgextraver="-rc3"
pkgrel=21
pkgdesc="ZFS"
url="http://zfsonlinux.org"
rodepends=("spl>=$pkgver")
makedepends=("spl-source>=$pkgver")
groups=('base-extra')
archs=('!i686' 'x86_64')
up2date="Flasttar $url"
backup=(etc/zfs/vdev_id.conf etc/zfs/zed.d/zed.rc)
_F_github_author="zfsonlinux"
_F_github_devel=yes
Finclude kernel-module github

Fconfopts+="	--datarootdir=/usr/lib \
		--with-config=all \
		--disable-sysvinit \
		--with-systemdunitdir=/lib/systemd/system"
build()
{
	Funpack_scm
	Fcd
	Fpatchall

	Fautogen
	Fmake
	Fmakeinstall

	Fbuild_kernelmod_scriptlet
	Fkernelver_compress_modules
	cat > $Fdestdir/etc/zfs/vdev_id.conf << EOF
# Put vdev configuration in this file.
EOF
	Frm /usr/lib/{systemd,modules-load.d}
}

# optimization OK
