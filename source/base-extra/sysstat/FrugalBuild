# Compiling Time: 0 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=sysstat
pkgver=11.4.1 ## stable
pkgrel=1
pkgdesc="A collection of performance monitoring tools for Linux"
url="http://sebastien.godard.pagesperso-orange.fr/"
backup=('etc/sysconfig/sysstat.ioconf' 'etc/sysconfig/sysstat')
depends=('lmsensors')
archs=('x86_64' 'i686')
groups=('base-extra')
up2date="lynx -dump http://sebastien.godard.pagesperso-orange.fr/download.html | grep -m1 'stable version is' | sed 's/.*is \(.*\) .*/\1/'"
source=(http://sebastien.godard.pagesperso-orange.fr/$pkgname-$pkgver.tar.xz)
sha1sums=('e4790ca06976847cb203a03f91a8412656f3d735')

build() {

	Fcd
	## please no
	Fsed 'lib64' 'lib' configure.in
	Fautoreconf
	Fbuild \
		--with-systemdsystemunitdir=/lib/systemd/system \
		--enable-copy-only \
		--enable-install-cron \
		--enable-install-isag
}

# optimization OK
