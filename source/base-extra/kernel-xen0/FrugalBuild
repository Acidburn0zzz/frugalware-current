# Compiling Time: 11.74 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgver=2.6.19
pkgrel=2
_F_kernel_vmlinuz="vmlinuz"
_F_kernel_stable=4
_F_kernel_name="-xen0"
_F_kernel_dontsedarch=1
_F_kernel_manualamd64=1
srcurl="http://ftp.frugalware.org/pub/other/sources/xen"
[ "$CARCH" == "x86_64" ] && \
        _F_kernel_patches=(${_F_kernel_patches[@]} linux-$pkgver-x86_64_config.patch0)
_F_kernel_patches=(${_F_kernel_patches[@]} $srcurl/linux-$pkgver-xen.patch.bz2)
Finclude kernel
pkgdesc="The Xen domain 0 Linux Kernel and modules"
rodepends=('module-init-tools' 'xen>=3.0.4')
groups=('base-extra')
source=(${source[@]} README.Frugalware)
signatures=("${signatures[@]}" '')
unset install
subgroups=('xapps-extra' 'xapps-extra')
up2date="lynx -dump http://cvs.fedora.redhat.com/viewcvs/devel/kernel-xen-2.6/sources?view=markup | grep linux | Flasttarbz2"

build()
{
	Fbuildkernel
	Fdoc README.Frugalware
}
