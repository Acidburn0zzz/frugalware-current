# Compiling Time: 0.1 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=spl
pkgver=0.6.5.8
pkgrel=5
pkgdesc="ZFS Solaris Porting Layer"
url="http://zfsonlinux.org"
depends=('glibc')
groups=('base-extra')
archs=('!i686' 'x86_64')
up2date="Flasttar $url"
source=(https://github.com/zfsonlinux/$pkgname/archive/$pkgname-$pkgver.tar.gz)
sha1sums=('bc25c7b4f2940a975de0ba100a5e53a8f1462b95')
_F_cd_path="$pkgname-$pkgname-$pkgver"
Finclude kernel-module

subpkgs=("$pkgname-source")
subrodepends=("$pkgname=$pkgver-$pkgrel")
subdescs=("Source code for the ZFS Solaris Porting Layer")
subgroups=("devel-extra")
subarchs=("${archs[*]}")

build()
{
	Fcd
	Fpatchall
	Fautogen

	Fmake --with-config=all
	Fmakeinstall

	Fbuild_kernelmod_scriptlet
	Fkernelver_compress_modules
	Fsplit $pkgname-source /usr/src
}

# optimization OK
