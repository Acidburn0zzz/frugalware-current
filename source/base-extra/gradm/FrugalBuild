grtime=200602141850
pkgrel=1
pkgdesc="Grsecurity administration tools"
url="http://www.grsecurity.net"
depends=('kernel')
groups=('base-extra')
archs=('i686')
up2date="lynx --dump http://www.grsecurity.net/~spender|grep gradm|sed -n 's/.*m-\([^-]*\)-.*/\1/;1 p'"
source=(http://www.grsecurity.net/~spender/gradm-$pkgver-$grtime.tar.gz)
