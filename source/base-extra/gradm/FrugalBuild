pkgrel=3
pkgdesc="Grsecurity administration tools"
url="http://www.grsecurity.net"
depends=('glibc')
rodepends=('kernel-grsec')
groups=('base-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.grsecurity.net/download.php|grep -1 Latest|sed -n 's/ //g;3 p'"
source=(http://www.grsecurity.net/gradm-$pkgver-$grtime.tar.gz)
