pkgver=2.6.16
pkgrel=3
_F_kernel_vmlinuz="vmlinuz"
_F_kernel_name="-xenU"
_F_kernel_dontsedarch=1
[ "$CARCH" == "x86_64" ] && \
        _F_kernel_patches=(${_F_kernel_patches[@]} linux-$pkgver-x86_64_config.patch0)
_F_kernel_patches=(${_F_kernel_patches[@]} smp-alts.patch \
	pmd-shared.patch \
	net-csum.patch \
	x86-increase-interrupt-vector-range.patch \
	i386-mach-io-check-nmi.patch \
	device_bind.patch \
	http://ftp.frugalware.org/pub/other/people/alex/linux-$pkgver-xen.patch.bz2 \
	revert_dodgy_skbuff_change.patch0)
Finclude kernel
pkgdesc="The Xen domain U Linux Kernel and modules"
rodepends=('module-init-tools' 'xen')
groups=('base-extra')
unset install
