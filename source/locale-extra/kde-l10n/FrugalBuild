pkgname=kde-l10n
pkgver=4.5.4
pkgrel=1
pkgdesc="Dummy package."
url="http://www.kde.org"
pkgurl="ftp://ftp.solnet.ch/pub/KDE/stable/$pkgver/src/$pkgname"
depends=()
makedepends=("kdelibs>=${_F_kde_ver}" "kdelibs-compiletime>=${_F_kde_ver}" "automoc4" "docbook-xsl")
groups=('locale-extra')
archs=('i686' 'x86_64' 'ppc')
options=('nodocs' 'scriptlet')
groups=('locale-extra')
#up2date="lynx -dump http://www.kde.org/download/|grep 'kdelibs'|sed -n '1 p'|sed 's/.*-\([^ ]*\) .*/\1/'"
up2date=$pkgver
## This parts are most from the OOo build. *me gives janny and vmiklos some power cookies* :)
klangs=( 'ar' 'bg' 'ca' 'ca@valencia' 'cs' 'da' 'de' 'el'
'en_GB' 'eo' 'es' 'et' 'eu' 'fi' 'fr' 'fy' 'ga' 'gl' 'gu' 'he' 'hi' 'hr' 'hu'
'ia' 'id' 'is' 'it' 'ja' 'kk' 'kn' 'km' 'ko' 'lt' 'lv' 'ml' 'nb' 'nds' 'nl' 'nn' 'pa'
'pl' 'pt' 'pt_BR' 'ro' 'ru' 'sk' 'sl' 'sr' 'sv' 'th'
'tr' 'uk' 'wa' 'zh_CN' 'zh_TW')
kdescs=('Arabic' 'Bulgarian'
'Catalan' 'Catalan (Valencian)' 'Czech' 'Danish' 'German' 'EL' 'British'
'Esperanto' 'Spanish' 'Estonian' 'Basque'  'Finnish' 'French' 'Frisian'
'Irish' 'Galician' 'Gujarati' 'Hebrew' 'Hindi' 'Croatian' 'Hungarian' 'Interlingua' 'Indonesian' 'Icelandic'
'Italian' 'Japanese' 'Kazakh' 'Khmer' 'Kannada' 'Korean' 'Lithuanian' 'Latvian' 'Malayalam'
'Norwegian' 'Low Saxon' 'Dutch' 'Norwegian' 'Punjabi'
'Polish' 'Portuguese' 'Brazilian' 'Romanian' 'Russian'
'Slovak' 'Slovenian' 'Serbian' 'Swedish' 'Thai'
'Turkish' 'Ukrainian' 'Walloon' 'Chinese Simplified' 'Chinese Traditional')
## source()
i=0
while [ $i -lt ${#klangs[@]} ]
do
        source=("${source[@]}" "$pkgurl/$pkgname-${klangs[$i]}-$pkgver.tar.bz2")
        i=$(($i+1))
done

## subpkgs()
i=0
while [ $i -lt ${#klangs[@]} ]
do
        subpkgs=("${subpkgs[@]}" "$pkgname-`echo ${klangs[$i]}|tr [A-Z] [a-z]`")
        subdescs=("${subdescs[@]}" "${kdescs[$i]} Localization for KDE.")
        subdepends=()
	subconflicts=("${subconflicts[@]}" "kde-i18n-`echo ${klangs[$i]}|tr [A-Z] [a-z]`")
	subreplaces=("${subreplaces[@]}" "kde-i18n-`echo ${klangs[$i]}|tr [A-Z] [a-z]`")
	subprovides=("${subprovides[@]}" "kde-i18n-`echo ${klangs[$i]}|tr [A-Z] [a-z]`")
        subgroups=("${subgroups[@]}" "locale-extra")
        subarchs=("${subarchs[@]}" "i686 x86_64 ppc")
        i=$(($i+1))
done

Finclude kde
build()
{

        for ksub in "${klangs[@]}"
        do
                cd "$Fsrcdir/$pkgname-$ksub-$pkgver"
		ksub=`echo $ksub|tr [A-Z] [a-z]`
                KDE_build
                Fsplit $pkgname-$ksub  /usr
        done
}



