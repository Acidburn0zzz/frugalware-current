# Compiling Time: 9.17 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kde-l10n
pkgver=4.3.2
pkgrel=1
pkgdesc="Dummy package."
url="http://www.kde.org"
pkgurl="ftp://ftp.solnet.ch/pub/KDE/stable/$pkgver/src/$pkgname"
depends=()
makedepends=("kdelibs>=$pkgver" automoc4)
groups=('locale-extra')
archs=('i686' 'x86_64' 'ppc')
options=('nodocs' 'scriptlet')
groups=('locale-extra')
#up2date="lynx -dump http://www.kde.org/download/|grep 'kdelibs'|sed -n '1 p'|sed 's/.*-\([^ ]*\) .*/\1/'"
up2date=$pkgver
## This parts are most from the OOo build. *me gives janny and vmiklos some power cookies* :)
klangs=( 'ar' 'bg' 'bn_IN' 'ca' 'cs' 'da' 'de' 'el'
'en_GB' 'es' 'et' 'eu' 'fi' 'fr' 'fy' 'ga' 'gl' 'he' 'hi' 'hr' 'hu'
'is' 'it' 'ja' 'km' 'ko' 'lt' 'lv' 'mk' 'nb' 'nds' 'nl' 'nn' 'pa'
'pl' 'pt' 'pt_BR' 'ro' 'sk' 'sl' 'sr' 'sv'
'tg' 'tr' 'uk' 'zh_CN' 'zh_TW')
kdescs=('Arabic' 'Bulgarian' 'Bengali'
'Catalan' 'Czech' 'Danish' 'German' 'EL' 'British'
'Spanish' 'Estonian' 'Basque'  'Finnish' 'French' 'Frisian'
'Irish' 'Galician' 'Hebrew' 'Hindi' 'Croatian' 'Hungarian' 'Icelandic'
'Italian' 'Japanese' 'Khmer' 'Korean' 'Lithuanian' 'Latvian' 'Macedonian'
'Norwegian' 'Low Saxon' 'Dutch' 'Norwegian' 'Punjabi'
'Polish' 'Portuguese' 'Brazilian' 'Romanian'
'Slovak' 'Slovenian' 'Serbian' 'Swedish'  'Tajik'
'Turkish' 'Ukrainian' 'Chinese Simplified' 'Chinese Traditional')
## source()
i=0
while [ $i -lt ${#klangs[@]} ]
do
        source=("${source[@]}" "$pkgurl/$pkgname-${klangs[$i]}-$pkgver.tar.bz2")
        i=$(($i+1))
done

## subpkgs()
i=0
while [ $i -lt ${#klangs[@]} ]
do
        subpkgs=("${subpkgs[@]}" "$pkgname-`echo ${klangs[$i]}|tr [A-Z] [a-z]`")
        subdescs=("${subdescs[@]}" "${kdescs[$i]} Localization for KDE.")
        subdepends=()
	subconflicts=("${subconflicts[@]}" "kde-i18n-`echo ${klangs[$i]}|tr [A-Z] [a-z]`")
	subreplaces=("${subreplaces[@]}" "kde-i18n-`echo ${klangs[$i]}|tr [A-Z] [a-z]`")
	subprovides=("${subprovides[@]}" "kde-i18n-`echo ${klangs[$i]}|tr [A-Z] [a-z]`")
        subgroups=("${subgroups[@]}" "locale-extra")
        subarchs=("${subarchs[@]}" "i686 x86_64 ppc")
        i=$(($i+1))
done

Finclude kde
build()
{

        for ksub in "${klangs[@]}"
        do
                cd "$Fsrcdir/$pkgname-$ksub-$pkgver"
		ksub=`echo $ksub|tr [A-Z] [a-z]`
                CMakeKDE_build
                Fsplit $pkgname-$ksub  /usr
        done
}



