# Compiling time: 0.01 SBU
# Maintainer: CSÉCSY László <boobaa@frugalware.org>

pkgname=sword-gerlut
pkgver=1.2
pkgrel=1
pkgdesc="German Luther Bibel (1912) module for Sword"
url='http://www.crosswire.org/sword/modules/ModInfo.jsp?modName=GerLut'
depends=('sword')
makedepends=('unzip')
groups=('locale-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.crosswire.org/sword/modules/ModInfo.jsp?modName=GerLut | grep 'Module Version' | sed 's/.*Module Version *\([0-9\.]*\).*/\1/'"
source=(http://www.crosswire.org/ftpmirror/pub/sword/packages/rawzip/GerLut.zip)
sha1sums=('70a29be5250e6b8eb30c4634fdb20ada6c3ca558')

build()
{
	Fmkdir /usr/share/sword
	cp -R $Fsrcdir/{modules,mods.d} $Fdestdir/usr/share/sword
}

# optimalization OK - noarch
