# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

_F_aspell_lang=mn
pkgname=aspell6-$_F_aspell_lang
pkgver=0.01r0
pkgrel=2
pkgdesc="GNU Aspell 0.60 Mongolian (Ð.Ð¾Ð½Ð³Ð¾Ð») Dictionary Package"
url="http://aspell.net/"
depends=('aspell>=0.60')
groups=('locale-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://ftp.gnu.org/pub/gnu/aspell/dict/$_F_aspell_lang/\?M=D|grep aspell6-$_F_aspell_lang|sed -n -e \"s/aspell6-$_F_aspell_lang-//\" -e 's/\.tar\..* / /' -e 's/-/r/' -e '1p'|cut -d ] -f 3|cut -d ' ' -f 1"
source=(ftp://ftp.gnu.org/gnu/aspell/dict/$_F_aspell_lang/$pkgname-`echo $pkgver|sed 's/r/-/'`.tar.bz2)
md5sums=('20aa91b99ce5e7a2b4168711398f5dfe')

build() {
	cd $startdir/src/$pkgname-`echo $pkgver|sed 's/r/-/'`
	./configure
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

