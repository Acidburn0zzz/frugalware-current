# Compiling time: 0.01 SBU
# Maintainer: CSÉCSY László <boobaa@frugalware.org>

pkgname=sword-saoa
pkgver=1.0
pkgrel=1
pkgdesc="Scripture Alphabet Of Animals module for Sword"
url='http://www.crosswire.org/sword/modules/ModInfo.jsp?modName=SAOA'
depends=('sword')
makedepends=('unzip')
groups=('locale-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.crosswire.org/sword/modules/ModInfo.jsp?modName=SAOA | grep 'Module Version' | sed 's/.*Module Version \(.*\) .*/\1/'"
source=(http://www.crosswire.org/ftpmirror/pub/sword/packages/rawzip/SAOA.zip)
sha1sums=('b05765b338ef0b60f3725b8272f85d6fd0cd44ff')

build()
{
	Fmkdir /usr/share/sword
	cp -R $Fsrcdir/{modules,mods.d} $Fdestdir/usr/share/sword
}


