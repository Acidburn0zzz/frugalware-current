pkgname=bibletime-i18n
pkgver=1.6
pkgrel=1
pkgdesc="Bible study software for KDE (internalization)"
url='http://www.bibletime.info'
depends=('bibletime>=1.6')
groups=('locale-extra')
archs=('i686')
_F_sourceforge_ext=.tar.bz2
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=954|grep -v 'beta'|grep -m1 'bibletime.*\.tar\.bz2'|sed 's/.*-\(.*\).tar.bz2 .*/\1/'"
source=(`echo $source | sed 's/-i18n//'` hu.po)
sha1sums=('4ee02de3b9d4a2ed65397df80ee8405323ef04ea' \
          'e64002420c47e08ff7704bd53b048ef4f763bdc9')

build() {
	Fcd
	mv ../hu.po po/
	Fbuild
}
