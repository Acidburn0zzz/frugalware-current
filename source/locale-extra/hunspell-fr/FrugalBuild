# Compiling time: 0.01 SBU
# Maintainer: Michel Hermier <hermier@frugalware.org>

lang=fr
pkgname=hunspell-fr
_F_archive_name=hunspell_$lang
Fpkgversep="_"
pkgver=3.2
pkgrel=1
pkgdesc="French dictionary for Hunspell"
url="http://dicollecte.free.fr"
rodepends=('hunspell>=1.0.8')
provides=('hunspell-dict')
groups=('locale-extra')
archs=('i686' 'x86_64' 'ppc')
up2date="Flastarchive $url/download.php\?prj=fr '\.zip' | sed 's/_/./g'"
source=(http://download.tuxfamily.org/dicollecte2/$_F_archive_name$Fpkgversep${pkgver//\./-}.zip)
install=$pkgname.install
options=('force')
sha1sums=('8fef3d9075f22db204697e5bad0189648c4726ed')

build() {
	Finstall 0644 $lang.{aff,dic} usr/share/myspell/
}

