          '29513f8dd42325af4fdfd436812e0398b4541d88' \
          '4d9897a2268252d164429a878e96a9f35957b97a' \
          'cde1c7cfa6141878dac836eed089808cb78558ce' \
          'ec1f07d96514bb43690c19fa6ae437127b28f846' \
          '8957ab8c90309f52581a8416b8a1c8e1cc99b410' \
          '5de0b6fc997d7190f533ff1d26a40948c9b1f4cc' \
          '6197d7f97c6d79c7ededd20f1df0c1df13b2ca5b' \
          'f7e436177687251e9dfc7e3e765351de419d8b44' \
          '3a4693443aee58904acb6ffa09de2454bac65fcf')
i=0
while [ $i -lt ${#clangs[@]} ]
do
        source=("${source[@]}" "$pkgurl/$pkgname-${clangs[$i]}-$pkgver.tar.bz2")
        i=$(($i+1))
done

## subpkgs()
i=0
while [ $i -lt ${#clangs[@]} ]
do
        subpkgs=("${subpkgs[@]}" "$pkgname-`echo ${clangs[$i]}|tr [A-Z] [a-z]`")
        subdescs=("${subdescs[@]}" "${cdescs[$i]} Localization for Calligra.")
        subdepends=("${subdepends[@]}" "calligra-libs>=$pkgver")
        subgroups=("${subgroups[@]}" "locale-extra")
        subarchs=("${subarchs[@]}" "i686 x86_64")
        i=$(($i+1))
done

build() {
	for old in en_GB pt_BR zh_CN zh_TW
	do
		new=`echo $old|tr [A-Z] [a-z]`
		mv $Fsrcdir/$pkgname-$old-$pkgver \
			$Fsrcdir/$pkgname-$new-$pkgver
	done

	for csub in "${clangs[@]}"
	do
		csub=`echo $csub|tr [A-Z] [a-z]`
		cd "$Fsrcdir/$pkgname-$csub-$pkgver"
		CMake_build
		Fsplit $pkgname-$csub  /\*
	done
}
