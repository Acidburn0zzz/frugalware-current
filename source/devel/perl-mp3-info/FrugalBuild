pkgname=perl-mp3-info
pkgver=1.13
perlver=5.8.6
pkgrel=1
pkgdesc="Perl module getting info from the MP3 files"
depends=('glibc' 'perl')
groups=('devel')
up2date=`lynx -dump http://www.cpan.org/modules/by-module/MP3/ | grep MP3-Info.*gz$|tail -n 1|sed 's/.*o-\(.*\)\.t.*/\1/'`
source=(http://www.cpan.org/modules/by-module/MP3/MP3-Info-$pkgver.tar.gz)
md5sums=('6f7bee09a5a78d7a6bc3a3c7cf1c3354')

build() {
	cd $startdir/src/MP3-Info-$pkgver
	perl Makefile.PL

	make || return 1

	make install DESTDIR=$startdir/pkg
	cd $startdir/pkg/usr/lib/perl5
	rm $perlver/$CARCH-linux/perllocal.pod
	mv site_perl/?.?.? site_perl/current
	rm -rf ?.?.?
	rm site_perl/current/$CARCH-linux/auto/MP3/Info/.packlist
}

# vim: ft=sh
