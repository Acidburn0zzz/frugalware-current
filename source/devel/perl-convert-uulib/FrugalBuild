pkgname=perl-convert-uulib
pkgver=1.06
pkgrel=1
pkgdesc="Perl interface to the uulib library (a.k.a. uudeview/uuenview)."
url="http://cpan.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/~mlehmann/' |grep 'Convert-UUlib-' |sed 's/.*UUlib-\(.*\)\ P.*/\1/;q'"
source=(http://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/Convert-UUlib-$pkgver.tar.gz)

build() {
	cd $startdir/src/Convert-UUlib-$pkgver
	perl Makefile.PL
	
	make || return 1
	make test
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

sha1sums=('e6170f5d40c7913c56d5dac7589bcae223840c93')
