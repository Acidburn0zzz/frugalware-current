# Last modified: Mon, 30 May 2005 17:07:01 +0000
# Compiling time: ~1 minute
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=ccache
pkgver=2.4
pkgrel=2
pkgdesc="A fast compiler cache"
url="http://ccache.samba.org"
depends=('glibc')
groups=('devel')
archs=('i686' 'x86_64')
source=($url/ftp/ccache/$pkgname-$pkgver.tar.gz)
up2date="lynx -dump $url | grep 'The latest release' | sed -e \"s/.*ccache \(.*\)\..*/\1/\""
md5sums=('73c1ed1e767c1752dd0f548ec1e66ce7')

[ "$CARCH" == "x86_64" ] && jarch=x86_64
echo "$CARCH" | grep -q 'i.86' && jarch=i686

build() {
	Fbuild
	Fmkdir /usr/lib/ccache/bin
        for i in cc c++ gcc g++ $jarch-pc-linux-gnu-c++ $jarch-pc-linux-gnu-gcc $jarch-pc-linux-gnu-g++ ; do
    	    Fln /usr/bin/ccache /usr/lib/ccache/bin/$i
	done
}

md5sums=('73c1ed1e767c1752dd0f548ec1e66ce7')
