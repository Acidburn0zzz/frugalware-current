modname=XML-SAX
modauthor=M/MS/MSERGEANT
pkgver=0.14
pkgdesc="Simple API for XML"
depends=('perl-xml-namespacesupport>=0.03')
Finclude perl
groups=('devel')
archs=('x86_64' 'i686')
sha1sums=('4bd3468134d3ecc1253e369514d2e46b83dbabe9')

build() {
	Fcd $modname-$pkgver
	sed -i -e "s,\(-MXML::SAX\),-I$Fdestdir/usr/lib/perl5/site_perl/current \1," Makefile.PL
	Fbuild
	Frm /usr/lib/perl5/current
}
