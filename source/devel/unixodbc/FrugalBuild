pkgname=unixodbc
pkgver=2.2.11
pkgrel=1
pkgdesc="ODBC is an open specification for providing application developers with a predictable API with which to access Data Sources"
url="http://www.unixodbc.org/"
depends=('readline')
groups=('devel')
archs=('i686' 'x86_64')
makedepends=('qt')
up2date="lynx -dump http://www.unixodbc.org/unixODBC.html|grep Released|sed -n 's/.* \([0-9\.]*\) .*/\1/;1 p'"
source=(http://www.unixodbc.org/unixODBC-$pkgver.tar.gz)
sha1sums=('a8869c38d0f1bb18b33e5165a2a79dd8770f98b3')

[ -f /etc/profile.d/qt.sh ] && . /etc/profile.d/qt.sh

build()
{
	Fcd unixODBC-$pkgver
	Fsed 'YY_FLUSH_BUFFER' 'yy_flush_buffer(YY_CURRENT_BUFFER)' sqp/lex.l
	LFLAGS=-l Fbuild --sysconfdir=/etc || return 1
}

# vim: ft=sh
