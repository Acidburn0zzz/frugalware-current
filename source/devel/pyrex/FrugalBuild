pkgname=pyrex
pkgver=0.9.4.1
pkgrel=2
pkgdesc="A language for writing Python extension modules"
url="http://www.cosc.canterbury.ac.nz/~greg/python/Pyrex/"
depends=('python')
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.cosc.canterbury.ac.nz/~greg/python/Pyrex/ | grep 'Pyrex-.*tar\.gz$' | sed -n 's/.*-\([0-9\.]\+\)\.tar.*/\1/;1 p'"
source=(http://www.cosc.canterbury.ac.nz/~greg/python/Pyrex/Pyrex-$pkgver.tar.gz)
sha1sums=('cafd221d75bacd411d8f0ca8dabc450a58466ba5')

build()
{
	Fcd Pyrex-$pkgver
	rm Makefile || Fdie
	Fbuild
}
