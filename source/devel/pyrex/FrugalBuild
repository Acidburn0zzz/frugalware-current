# Last Modified: Sun, 31 Jul 2005 16:29:55 +0200
# Compiling Time: ~3 seconds
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=pyrex
pkgver=0.9.3
pkgrel=2
pkgdesc="A language for writing Python extension modules"
url="http://www.cosc.canterbury.ac.nz/~greg/python/Pyrex/"
depends=('python')
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.cosc.canterbury.ac.nz/~greg/python/Pyrex/|grep tar.gz$|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.cosc.canterbury.ac.nz/~greg/python/Pyrex/Pyrex-$pkgver.tar.gz $pkgname-$pkgver-gcc4.patch)
sha1sums=('bbd534b1905de5f3ad445c6d30a2fd57a4b362be' \
	  '53bf65cf13709cc79a8ce896ad5b030dad3ac25d')

build()
{
	Fcd Pyrex-$pkgver
	Fpatchall

	python setup.py build

	python setup.py install --root=$startdir/pkg/
}

