# Last Modified: Fri, 01 Apr 2005 07:54:06 +0200
# Compiling Time: ~30 seconds
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=python-tools
pkgver=2.4.1
shortpkgver=2.4 # 2.3 if $pkgver=2.3.4
pkgrel=1
pkgdesc="Optional development tools to extending Python"
url="http://www.python.org"
depends=('python')
groups=('devel')
up2date=`lynx -dump http://www.python.org/download/|grep current|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 3`
source=(ftp://ftp.python.org/pub/python/$pkgver/Python-$pkgver.tgz)
md5sums=('7bb2416a4f421c3452d306694d3efbba')

build() {
    cd $startdir/src/Python-$pkgver/Tools

    mkdir -vp $startdir/pkg/usr/lib/python$shortpkgver/site-packages/
    mkdir -vp $startdir/pkg/usr/bin

    cp -Rv * $startdir/pkg/usr/lib/python$shortpkgver/site-packages/

    cd $startdir/pkg/usr/bin

    ln -s ../lib/python$shortpkgver/site-packages/i18n/msgfmt.py msgfmt.py
    ln -s ../lib/python$shortpkgver/site-packages/i18n/pygettext.py pygettext.py
    ln -s ../lib/python$shortpkgver/site-packages/modulator/modulator.py \
	modulator.py
    ln -s ../lib/python$shortpkgver/site-packages/pynche/pynche pynche

    cd $startdir/pkg/usr/lib/python$shortpkgver/site-packages
    rm -v README
}

# vim: ft=sh
