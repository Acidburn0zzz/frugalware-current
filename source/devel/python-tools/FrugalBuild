pkgname=python-tools
pkgver=2.4.2
shortpkgver=`echo $pkgver | cut -d . -f 1,2`
pkgrel=1
pkgdesc="Optional development tools to extending Python"
url="http://www.python.org"
depends=('python')
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.python.org/download/|grep current|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 3"
source=(ftp://ftp.python.org/pub/python/$pkgver/Python-$pkgver.tgz)
sha1sums=('373b0954f2a5adb02ba905b51e14ed98ff1c7b7b')

build()
{
    Fcd Python-$pkgver/Tools
    Fmkdir /usr/bin /usr/lib/python$shortpkgver/site-packages
    cp -rv * $Fdestdir/usr/lib/python$shortpkgver/site-packages/
    Fln /usr/lib/python$shortpkgver/site-packages/i18n/msgfmt.py /usr/bin/msgfmt.py
    Fln /usr/lib/python$shortpkgver/site-packages/i18n/pygettext.py /usr/bin/pygettext.py
    Fln /usr/lib/python$shortpkgver/site-packages/modulator/modulator.py /usr/bin/modulator.py
    Fln /usr/lib/python$shortpkgver/site-packages/pynche/pynche /usr/bin/pynche
    Frm /usr/lib/python$shortpkgver/site-packages/README
}

# optimalization OK - noarch

