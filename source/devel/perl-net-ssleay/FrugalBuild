# Compiling Time: ~0.1 SBU
# Maintainer: Zsolt Szalai <xbit@frugalware.org>

modrealname=Net_SSLeay.pm
_F_perl_name=Net_SSLeay
_F_perl_author=F/FL/FLORA
pkgname=perl-net-ssleay
pkgver=1.30
pkgrel=1
pkgdesc="Perl extension for using OpenSSL"
url="http://cpan.org/"
makedepends=('perl')
depends=('openssl' 'perl')
groups=('devel')
archs=('i686' 'x86_64')
options=('nofakeroot')
up2date="lynx -dump -nolist 'http://search.cpan.org/search?query=${_F_perl_name}&mode=all'|grep -m1 '$_F_perl_name.pm-' | sed -e 's/.*${_F_perl_name}.pm-\(.*\) .*/\1/' -e 's/ .*//'"
source=(http://search.cpan.org/CPAN/authors/id/$_F_perl_author/$modrealname-$pkgver.tar.gz)
sha1sums=('c020af556a43d83675bae4419d63a34ade30ab81')

build() {
    Fcd $modrealname-$pkgver
    perl Makefile.PL /usr DESTDIR=$Fdestdir || Fdie
    make || Fdie
    Fmakeinstall
}
