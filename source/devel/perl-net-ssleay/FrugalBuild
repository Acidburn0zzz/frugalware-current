modrealname=Net_SSLeay.pm
modname=Net_SSLeay
modauthor=F/FL/FLORA
pkgname=perl-net-ssleay
pkgver=1.30
pkgrel=1
pkgdesc="Perl extension for using OpenSSL"
url="http://cpan.org/"
makedepends=('perl')
depends=('openssl' 'perl')
groups=('devel')
archs=('i686' 'x86_64')
options=('nofakeroot')
up2date="lynx -dump -nolist 'http://search.cpan.org/search?query=${modname}&mode=all'|grep -m1 '$modname.pm-' | sed -e 's/.*${modname}.pm-\(.*\) .*/\1/' -e 's/ .*//'"
source=(http://search.cpan.org/CPAN/authors/id/$modauthor/$modrealname-$pkgver.tar.gz)
sha1sums=('c020af556a43d83675bae4419d63a34ade30ab81')

build() {
    Fcd $modrealname-$pkgver
    perl Makefile.PL /usr DESTDIR=$Fdestdir || Fdie
    make || Fdie
    Fmakeinstall
}
