pkgname=perl-compress-zlib
pkgver=1.41
pkgrel=1
pkgdesc="Interface to zlib compression library"
url="http://cpan.org/"
makedepends=('perl')
depends=('perl')
groups=('devel')
archs=('i686' 'x86_64')
up2date="pud -p 'http://search.cpan.org/search?query=compress%3A%3Azlib&mode=all' -e 'Zlib-(.*?) '"
source=(http://search.cpan.org/CPAN/authors/id/P/PM/PMQS/Compress-Zlib-$pkgver.tar.gz)
sha1sums=('0a0aea0fe460956d71db0a0f571d67078ca1dc94')

build()
{
	Fcd Compress-Zlib-$pkgver
	Fbuild
	Frm /usr/lib/perl5/current
}

# optimalization OK

