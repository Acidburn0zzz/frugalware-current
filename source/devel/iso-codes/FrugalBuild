pkgname=iso-codes
pkgver=0.57
pkgrel=1
debrel=1
pkgdesc="Provides the list of country and language names"
url="http://alioth.debian.org/projects/pkg-isocodes/"
depends=('python')
makedepends=('pyxml')
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://packages.debian.org/unstable/misc/iso-codes'|grep -m1 'iso-codes_\(.*\).tar.gz'|sed 's/.*_\(.*\).t.*/\1/;s/-/_/g'"
source=(http://ftp.debian.org/debian/pool/main/i/$pkgname/${pkgname}_$pkgver.orig.tar.gz \
	iso-codes-0.52-pkgconfig-fixes.patch)
sha1sums=('030a21b1fd9ce47bb196147f153d335900330b4c' \
	  '44841e6019eea610bdba5ddfe52b8c393ba878ca')

build() {
	Fcd
	Fpatchall
	Fmake
	Fmakeinstall
}

# optimization OK
