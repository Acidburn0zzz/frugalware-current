pkgname=iso-codes
pkgver=0.47
pkgrel=1
pkgdesc="Provides the list of country and language names"
url="http://alioth.debian.org/projects/pkg-isocodes/"
depends=('python')
makedepends=('pyxml')
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://packages.debian.org/unstable/misc/$pkgname' | grep iso-codes_.*.tar.gz | head -n 1 | sed 's/.*iso-codes_\(.*\).orig.tar.gz.*/\1/'"
source=(http://ftp.debian.org/debian/pool/main/i/$pkgname/${pkgname}_$pkgver.orig.tar.gz \
	iso-codes-pkgconfig-and-misc-fixes.patch.bz2)
sha1sums=('4f477e9e8d3aaf889c6c94b7aeff55664838307e' \
	  '2d1e9b485c3c42eab25314c5f31236dfb9dcb342')

build() {
	Fcd
	Fpatchall
	sh ./autogen.sh
	Fmake
	Fmakeinstall
}

