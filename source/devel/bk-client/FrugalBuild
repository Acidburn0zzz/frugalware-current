# Last Modified: Thu, 07 Apr 2005 20:02:48 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=bk-client
pkgver=1.1
pkgrel=1
pkgdesc="An Open Source BitKeeper Client"
url="http://www.bitmover.com/"
depends=('zlib')
groups=('devel')
up2date=$pkgver
source=($url/$pkgname.shar)
md5sums=('fd22644204abc0c9d1a35b5d78b654f5')

build()
{
	Fcd ""
	unshar $pkgname.shar
	cd bk_client-$pkgver
	Fsed '^\(CFLAGS=\).*' "\1$CFLAGS" Makefile
	make || return 1
	Fexerel update /usr/bin/bk-update
	Fexerel  /usr/bin/sfio
	Fexerel /usr/bin/sfioball
	Fexerel /usr/share/doc/$pkgname-$pkgver/demo.sh
}

# optimalization ok

# vim: ft=sh
