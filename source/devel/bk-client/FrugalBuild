# Last Modified: Mon, 30 May 2005 17:00:48 +0000
# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=bk-client
pkgver=1.1
pkgrel=1
pkgdesc="An Open Source BitKeeper Client"
url="http://www.bitmover.com/"
depends=('zlib')
groups=('devel')
archs=('i686' 'x86_64')
up2date=$pkgver
source=($url/$pkgname.shar)
sha1sums=('4074ce4c8d9f88915f35f7264c4ce69fe13da5d8')

build()
{
	Fcd ""
	unshar $pkgname.shar
	cd bk_client-$pkgver
	Fsed '^\(CFLAGS=\).*' "\1$CFLAGS" Makefile
	make || return 1
	Fexerel update /usr/bin/bk-update
	Fexerel  /usr/bin/sfio
	Fexerel /usr/bin/sfioball
	Fexerel /usr/share/doc/$pkgname-$pkgver/demo.sh
}

# optimization ok

# vim: ft=sh
