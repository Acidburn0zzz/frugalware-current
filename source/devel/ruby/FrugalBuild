pkgname=ruby
pkgver=1.8.3
pkgrel=1
pkgdesc="An object-oriented programming language"
url="http://www.ruby.org/"
depends=('gdbm' 'db' 'openssl' 'zlib' 'readline' 'termcap')
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.ruby-lang.org/en/20020102.html | grep 'The stable release' | sed \"s/.*ruby-\([0-9\.]*\)\..*/\1/\""
source=(ftp://ftp.ruby-lang.org/pub/ruby/ruby-$pkgver.tar.gz)
sha1sums=('407e70377214fcb812cdbb86a3e1b735e69b7cff')

build() {
	Fbuild --enable-shared --enable-pthread
}

