# Compiling time: 0.53 SBU
# Contributor: Bence Nagy <nagybence@tipogral.hu>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=ruby
pkgver=1.8.7
pkgextraver=
pkgrel=2
pkgdesc="An object-oriented programming language."
url="http://www.ruby-lang.org/"
depends=('termcap' 'zlib' 'db>=4.7.25' 'readline' 'openssl' 'gdbm')
makedepend=('tk')
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.ruby-lang.org/en/downloads/ |sort -r|Flasttar"
source=(ftp://ftp.ruby-lang.org/pub/ruby/1.8/ruby-${pkgver}.tar.bz2)
sha1sums=('297282d0e4b885176336f5b26f986f9cf5f47133')

build() {
	Fbuild --enable-shared --enable-pthread \
		--with-tk-include=/usr/include/tk/generic \
		--with-tcl-include=/usr/include/tcl/generic
	Fmakeinstall install-doc
}

# optimization OK
