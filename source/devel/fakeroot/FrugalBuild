# Contributor: Kapolnasi Tamas <ktamas@tdc.hu>
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=fakeroot
pkgver=1.21
pkgrel=1
pkgdesc="Gives a fake root environment"
url="http://packages.debian.org/unstable/utils/fakeroot"
depends=('glibc>=2.24')
makedepends=('po4a')
groups=('devel' 'devel-core')
archs=('i686' 'x86_64')
Fpkgversep="_"
up2date="Flastarchive http://ftp.debian.org/debian/pool/main/f/fakeroot/ .orig.tar.gz"
source=(http://ftp.debian.org/debian/pool/main/f/fakeroot/${pkgname}_$pkgver.orig.tar.gz \
	dont-be-verbose.patch)
sha1sums=('9ce6155c0f3edf310818a09b6b1b8968a8cb0cd4' \
          'fb1bd8dc7c4d62412632023316d084dab25dd968')
_F_cd_path="$pkgname-$pkgver"
## to be removed after gcc6 tc is done
options+=('nofakeroot')

build() {

	Fcd
	./bootstrap || Fdie
	Fmake --with-ipc=sysv
	## weird
	cd doc || Fdie
	po4a -k 0 --rm-backups --variable "srcdir=../doc/" po4a/po4a.cfg || Fdie
	cd ..
	Fmakeinstall
}

# optimization OK
