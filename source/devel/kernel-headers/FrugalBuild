# Last modified: Fri, 06 Jan 2006 01:14:53 +0100
# Compiling time: ~0 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=kernel-headers
realname=linux-libc-headers
pkgver=2.6.12.0
pkgrel=2
pkgdesc="Linux kernel include files"
url="http://ep09.pld-linux.org/~mmazur/linux-libc-headers/"
depends=()
groups=('devel' 'devel-core')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump 'http://ep09.pld-linux.org/~mmazur/linux-libc-headers/?C=M;O=D'|grep tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://ep09.pld-linux.org/~mmazur/$realname/$realname-$pkgver.tar.bz2 \
	$pkgname-$pkgver-config.patch)
sha1sums=('e72c9b260995b269c9fb9248ed468c18fb01f3fd' \
	  '2b80b3292e13cff0be30f7a38cd16f00da703192')
[ "$CARCH" == "x86_64" ] && ark=x86_64
[ "$CARCH" == "i686" ] && ark=i386
[ "$CARCH" == "ppc" ] && ark=ppc

build()
{
	Fcd $realname-$pkgver
	Fpatchall
	Fmkdir /usr/include
	mv include/asm-$ark $Fdestdir/usr/include/asm
	mv include/linux $Fdestdir/usr/include

	Fmkdir /usr/share/doc/$pkgname-$pkgver
	mv doc/* $Fdestdir/usr/share/doc/$pkgname-$pkgver
}

# vim: ft=sh
