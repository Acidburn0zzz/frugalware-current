# Last modified: Sun, 17 Jul 2005 22:38:55 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=kernel-headers
realname=linux-libc-headers
pkgver=2.6.12.0
pkgrel=1
pkgdesc="Linux kernel include files"
url="http://ep09.pld-linux.org/~mmazur/linux-libc-headers/"
depends=()
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://ep09.pld-linux.org/~mmazur/linux-libc-headers/?C=M;O=D'|grep tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://ep09.pld-linux.org/~mmazur/$realname/$realname-$pkgver.tar.bz2)
md5sums=('eae2f562afe224ad50f65a6acfb4252c')
[ "$CARCH" == "x86_64" ] && ark=x86_64
[ "$CARCH" != "x86_64" ] && ark=i386

build() {
	cd $startdir/src/$realname-$pkgver
	mkdir -p $startdir/pkg/usr/include
	mv include/asm-$ark $startdir/pkg/usr/include/asm
	mv include/linux $startdir/pkg/usr/include

	mkdir -p $startdir/pkg/usr/share/doc/$pkgname-$pkgver
	mv doc/* $startdir/pkg/usr/share/doc/$pkgname-$pkgver
}

# vim: ft=sh
