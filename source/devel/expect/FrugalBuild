# Compiling Time: 0.01 SBU
# Maintainer: Karoly CZOVEK <slinky@rei.keni.hu>

pkgname=expect
pkgver=5.43
pkgrel=1
pkgdesc="Expect interpreter"
url="http://expect.nist.gov/"
depends=('glibc' 'tcl')
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump http://expect.nist.gov/|grep 'of Expect is'|sed -e 's/.*s\(.*\) /\1/'|sed s'|.0.||g'"
source=($url/old/expect-5.43.0.tar.gz expect-5.43-autoconf-update.patch)
sha1sums=('854440d937c1d05103bf2d02f911005b739fa1e9' \
          '3ec517c41ae18c979e8340c3296f731f15c0bade')

build()
{
	Fpatchall || return 1
	Fmake --enable-gcc --with-tcl=/usr/lib/ \
	--with-tclinclude=/usr/include/tcl/tcl || return 1
	Fmkdir /usr/
	make INSTALL_ROOT=$Fdestdir install
}

# vim: ft=sh
