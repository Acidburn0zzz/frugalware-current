pkgname=perl-dbi
pkgver=1.45
pkgrel=1
pkgdesc="Database independent interface for Perl"
depends=('glibc' 'perl')
up2date=`lynx -dump 'http://www.cpan.org/modules/by-module/DBI/?M=D' |grep DBI|grep tar.gz|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 4|sed 's/.tar.gz//'|cut -d - -f 2`
source=(http://www.cpan.org/modules/by-module/DBI/DBI-$pkgver.tar.gz)
md5sums=('31ac7c8aea0ebc61c3a9fc120a770fbd')

build() {
	cd $startdir/src/DBI-$pkgver
	perl Makefile.PL
	
	make || return 1
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
}

# vim: ft=sh
