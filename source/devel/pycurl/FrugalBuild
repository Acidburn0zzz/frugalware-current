pkgname=pycurl
pkgver=7.21.5
pkgrel=1
pkgdesc="Python module interface to the cURL library"
depends=('python>=2.7.11-3' 'curl>=7.46.0-2' 'zlib>=1.2.8-4' 'openssl>=1.0.2-3')
url="http://pycurl.sourceforge.net/"
# sourceforge.sh doesn't works
groups=('devel')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=(http://pycurl.sourceforge.net/download/$pkgname-$pkgver.tar.gz)
sha1sums=('60865d22fc715ca5197117ea3ad32413d3c7402e')

build() {
  	Fcd
  	python setup.py install --curl-config=/usr/bin/curl-config --prefix $Fdestdir/usr --with-ssl || Fdie
}


# optimization OK
