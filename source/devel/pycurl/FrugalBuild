pkgname=pycurl
pkgver=7.43.0
pkgrel=2
pkgdesc="Python module interface to the cURL library"
depends=('python>=2.7.12-2' 'curl>=7.50.3-2' 'zlib>=1.2.8-8' 'openssl>=1.0.2-8')
url="http://pycurl.io/"
groups=('devel')
archs=("x86_64")
up2date="Flasttar $url"
source=(https://dl.bintray.com/$pkgname/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('e8e9c7e9ae91ae32096b8c86cfc7d49976a66d1b')

build() {
  	Fcd
  	python setup.py install --curl-config=/usr/bin/curl-config --prefix $Fdestdir/usr --with-ssl || Fdie
}


# optimization OK
