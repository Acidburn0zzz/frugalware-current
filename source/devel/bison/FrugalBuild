pkgname=bison
pkgver=1.875
pkgrel=1
pkgdesc="Bison is a general-purpose parser generator that converts a grammar description for an LALR context-free grammar into a C program to parse that grammar."
url="http://www.gnu.org/software/bison/bison.html"
depends=('glibc')
up2date=`lynx -dump http://ftp.gnu.org/gnu/bison/ |tail -n 1 |cut -d '-' -f 2 |cut -d '.' -f 1-2`
source=(http://ftp.gnu.org/gnu/bison/bison-1.875.tar.bz2)
md5sums=('b7f8027b249ebd4dd0cc948943a71af0')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc
	make || return 1
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
