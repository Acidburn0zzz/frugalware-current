pkgname=tk
pkgver=8.4.7
shortpkgver=8.4
pkgrel=1
pkgdesc="A windowing toolkit for use with tcl"
depends=('tcl' 'x')
up2date=`lynx -dump http://sourceforge.net/project/showfiles.php?group_id=10894|grep 'tk[[:print:]]*-src.tar.gz '|grep -v '[ab][[:digit:]]'|sed -n -e 's/.tar.gz//' -e 's/tk//' -e '1 p'|cut -d ] -f 2|cut -d - -f 1`
source=(http://dl.sf.net/sourceforge/tcl/tk$pkgver-src.tar.gz $pkgname-tcl_headers.diff)
md5sums=('f237451c44aa21de69b772d57b88f72d' 'a00bbf662e571dbc39ad06e5e3531bf5')

build() {
  cd $startdir/src/tk$pkgver
  patch -p1 <$startdir/src/$pkgname-tcl_headers.diff
  cd unix
  ./configure --prefix=/usr

  make || return 1

  make INSTALL_ROOT=$startdir/pkg install
  cd $startdir/pkg/usr/bin && mv wish$shortpkgver wish
}
