pkgname=bzr
pkgver=0.8.2
pkgrel=1
pkgdesc="Next generation distributed version control"
url="http://bazaar-ng.org/"
depends=('elementtree' 'urlgrabber')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/pkg/|grep bzr-[0-9\.]*tar.gz$|sed 's/.*bzr-\(.*\)\.t.*/\1/'|Fsort|sed -n '$ p'"
source=($url/pkg/$pkgname-$pkgver.tar.gz)

build()
{
	Fcd
	rm -f Makefile
	Fbuild
}
sha1sums=('1aea6e0783219f0c2d074c9407ad09cb36b4ade2')
