# Last Modified: Wed, 21 Jun 2006 19:38:06 +0200
# Compiling Time: 0.06 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=boost-jam
pkgver=3.1.13
pkgrel=1
pkgdesc="Boost.Jam - an alternative to make based on Jam."
url="http://www.boost.org/tools/build/jam_src/index.html"
depends=('glibc')
groups=('devel-extra')
archs=('x86_64' 'i686')
conflicts=('jam')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=7586'|grep -m 1 'boost-jam-[0-9\.]*.tgz'|sed 's/.*jam-\(.*\).tgz .*/\1/'"
source=(http://heanet.dl.sourceforge.net/boost/$pkgname-$pkgver.tgz boost-jam-misc.patch)
sha1sums=('a073dfd7864b72afd1b4f6e258a68ed985c43957' \
	  'e47680c0c6878a151872d969e9aac103068c257f')

build() {
	Fcd
	Fpatchall
	LOCATE_TARGET=bin ./build.sh cc
	Fmkdir /usr/bin/
	Fexe $pkgname-$pkgver/bin/* usr/bin/
	Frm usr/bin/yyacc
}

# optimization OK
