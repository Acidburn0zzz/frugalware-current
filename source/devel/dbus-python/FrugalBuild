# Compiling time: 0.12 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: PacMiam <PacMiam@gmx.fr>

pkgname=dbus-python
pkgver=1.2.4
pkgrel=2
pkgdesc="Python bindings for D-BUS"
url="http://www.freedesktop.org/wiki/Software/DBusBindings"
depends=('dbus-glib>=0.108-2' 'python>=2.7.12-2' 'libffi>=3.2.1-2')
makedepends=('docutils')
rodepends=("$pkgname-devel")
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump http://dbus.freedesktop.org/releases/dbus-python/|Flasttar"
source=(http://dbus.freedesktop.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('078a76d760ba649991b0ac0ae2eaeda41c00ca5b')

subpkgs=("dbus-python3")
subdescs=("Python 3 bindings for DBUS")
subdepends=("python3>=3.5.2-2 dbus-glib>=0.108-2 libffi>=3.2.1-2")
subrodepends=("$pkgname-devel")
subgroups=('devel')
subarchs=('i686 x86_64')

subpkgs+=("$pkgname-devel")
subdescs+=("dbus-python devel")
subdepends+=("")
subrodepends+=("")
subgroups+=('devel')
subarchs+=('i686 x86_64')

build() {
	#python3
	export PYTHON=python3
	Fbuild
	Frm usr/share
	Frm usr/include
	Frm usr/lib/pkgconfig
	Fsplit dbus-python3 usr
	make clean || Fdie
	unset PYTHON

	#python2
	export PYTHON=python2.7
	Fmake
	Fmakeinstall
	Frm usr/share/doc

	Fsplit $pkgname-devel usr/include
	Fsplit $pkgname-devel usr/lib/pkgconfig
}

# optimization OK
