pkgname=ruby-bdb
pkgver=0.5.9
pkgrel=1
pkgdesc="This is an interface to Berkeley DB for Ruby."
url="http://raa.ruby-lang.org/list.rhtml?name=bdb"
depends=('ruby')
groups=('devel-extra')
archs=('i686' 'x86_64')
source=(ftp://moulon.inra.fr/pub/ruby/bdb.tar.gz)
up2date="lynx -dump http://raa.ruby-lang.org/list.rhtml?name=bdb |grep version |sed -ne 's/.*n=//;1p'"
sha1sums=('6cd42dcfaff63ae994dc4048513ab099277ddd2d')

build() {
	Fcd bdb-$pkgver
	Fbuild
}

# optimization OK
