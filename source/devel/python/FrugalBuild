pkgname=python
pkgver=2.3.4
shortpkgver=2.3
pkgrel=1
pkgdesc="A high-level scripting language"
url="http://www.python.org"
depends=('glibc' 'db' 'bzip2' 'gdbm' 'openssl')
makedepends=('tk')
up2date=`lynx -dump http://www.python.org/download/|grep current|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 3`
source=(ftp://ftp.python.org/pub/python/$pkgver/Python-$pkgver.tgz)
md5sums=('b6cf0b19226861a38689d2fabd0931b3')

build() {
  cd $startdir/src/Python-$pkgver
  ./configure --prefix=/usr --with-threads

  make || return 1

  make DESTDIR=$startdir/pkg install

  # cosmetics :)
  cd $startdir/pkg/usr/bin && rm python$shortpkgver && ln -s python python$shortpkgver
}
