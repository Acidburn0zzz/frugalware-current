pkgname=mpg123
pkgver=1.15.1
pkgrel=1
pkgdesc="mpg123 is the fast and Free MPEG Audio Player"
url="http://www.mpg123.de"
depends=('libtool')
rodepends=('libmpg123')
groups=('multimedia-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/download/"
source=("$url/download/$pkgname-$pkgver.tar.bz2")
sha1sums=('824003a25f22dde5a03031cb658b6d6a160e8740')

subpkgs=('libmpg123')
subdescs=('libmpg123 is the API used by the mpg123 audio player')
subdepends=('libao>=1.1.0')
subgroups=('lib-extra')
subarchs=('i686 x86_64')

build()
{
	Fbuild

	Fsplit libmpg123 usr/lib
	Fsplit libmpg123 usr/include
}


# optimization OK
