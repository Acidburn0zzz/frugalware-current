# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=mp3check
pkgver=1.98
pkgrel=2
pkgdesc="mp3_check helps to identify in explicit detail MP3s that do not correctly follow the MP3 format."
depends=('glibc')
_F_sourceforge_name="mp3_check"
_F_sourceforge_dirname=$pkgname
Finclude sourceforge
groups=('multimedia-extra')
archs=('i686')
sha1sums=('64f796d9b29fecb34ce05b05d75404aadd8fdb52')

build() {
	Fcd "$_F_sourceforge_name-$pkgver"
	Fsed "/usr/local" "$Fdestdir/usr" Makefile
	Fmkdir usr/bin
	Fbuild
}

# optimization OK

