# Compiling Time: 0 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=ezthumb
pkgver=2.0.0
pkgrel=1
pkgdesc="A video thumbnail generator based on ffmpeg."
depends=('gtk+2' 'ffmpeg' 'gd')
groups=('multimedia-extra')
archs=('i686')
Finclude sourceforge
sha1sums=('c3c436a04d534701ce46763e4cdb016f56a4e0e5')

_F_desktop_icon="/usr/share/pixmaps/ezthumb.svg"
_F_desktop_categories="AudioVideo"

build() {
	Fcd
	Fmake
	Fexerel $pkgname /usr/bin/$pkgname
	mv SMirC-thumbsup.svg $pkgname.svg
	Ficonrel $pkgname.svg
	Fmanrel $pkgname.1
	Fdesktop2
}
