pkgname=qc-usb
pkgver=0.6.4
pkgrel=9
pkgdesc="Quickcam kernel driver."
Finclude kernel-module
groups=('multimedia-extra')
archs=('i686')
_F_sourceforge_dirname="qce-ga"
Finclude sourceforge
url="http://qce-ga.sourceforge.net/"
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=12924|grep qc-usb |sed 's/[^]]*][^]]*]\([^ ]*\) .*/\1/;q'"
source=($source qc-usb-0.6.4-linux2618.diff)

build()
{
	# no Fcheckkernel, crosscompilation verified
	Fpatchall
	make LINUX_DIR=/lib/modules/$kernelbasever-fw$kernelrel/build all || return 1
	Ffilerel /lib/modules/`uname -r`/kernel/drivers/usb/misc/quickcam.ko
}

sha1sums=('5ef041ea1d77c3659c667ac58229ab8d03f34be8' \
	  '7e63ba79ed289eb3d2ecae88d8bb71061ab21954')
