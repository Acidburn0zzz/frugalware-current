pkgname=mpc
pkgver=0.11.2
pkgrel=1
pkgdesc="A command line tool to interface MPD."
url=http://www.musicpd.org/mpc.shtml
license="GPL2"
groups=('multimedia-extra')
depends=('glibc')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep 'Current Version is'|sed 's/[^0-9]*//'"
source=(http://mercury.chem.pitt.edu/~shank/$pkgname-$pkgver.tar.gz)
sha1sums=('b318ffdf4d27c14f761070b83dec3a3433612586')
if [ "$CARCH" == "x86_64" ]; then
	export CFLAGS="$CFLAGS -fPIC"
fi

# optimization OK
