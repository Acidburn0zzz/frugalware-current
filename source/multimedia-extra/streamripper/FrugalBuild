pkgname=streamripper
pkgver=1.62.2
pkgrel=1
pkgdesc="Lets you record streaming mp3 to your hard drive."
depends=('libmad' 'libvorbis')
groups=('multimedia-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="lynx source -dump 'http://sourceforge.net/project/showfiles.php?group_id=6172&package_id=135478'|grep streamripper-[0-9.]*tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/;q'"
sha1sums=('6daeec5979858a6969dccca23fcc96d781e571ba')

# TODO: build with system tre

build()
{
	Fcd
	cp /usr/share/automake/mkinstalldirs .
	Fsed '@MKINSTALLDIRS@' "`pwd`/mkinstalldirs" tre-0.7.2/po/Makefile.in.in
	Fbuild --with-included-tre
}

# optimization OK
