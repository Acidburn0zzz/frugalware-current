# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=linux-uvc
pkgver=r217
pkgrel=2
pkgdesc="Linux driver for USB Video Class devices."
url="http://linux-uvc.berlios.de/"
Finclude kernel-module
groups=('multimedia-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump ftp://ftp.frugalware.org/pub/other/sources/$pkgname/ | Flasttar"
source=(ftp://ftp.frugalware.org/pub/other/sources/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('957ab87746ae4954982bf49f34c4f50df4a2d17e')

build()
{
  Fcd
  Fmake
  Finstallrel 644 uvcvideo.ko lib/modules/$_F_kernelmod_uname/kernel/drivers/media/video/usbvideo/uvcvideo.ko
  Fbuild_kernelmod_scriptlet
}
