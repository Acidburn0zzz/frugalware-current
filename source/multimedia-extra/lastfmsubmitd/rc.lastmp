# description: lastmp is a helper script for lastfmsubmitd

source /lib/initscripts/functions

TEXTDOMAIN=lastmp
TEXTDOMAINDIR=/lib/initscripts/messages
actions=(restart start stop)
daemon=$"LastMP"
pid="pidof lastmp 2> /dev/null"

rc_start()
{
	start_msg
	if [ -z "$(eval $pid)" ]; then
		/usr/bin/lastmp &
		ok $?
	else
		ok 999
	fi
}

rc_stop()
{
	stop_msg
	if [ ! -z "$(eval $pid)" ]; then
		killall lastmp
		ok $?
	else
		ok 999
	fi
}

rc_exec $1
