pkgname=youtube-dl
pkgver=2009.12.26
pkgrel=1
pkgdesc="A small command-line program to download videos from YouTube.com"
archs=('i686' 'x86_64' 'ppc')
url="http://bitbucket.org/rg3/youtube-dl/wiki/Home"
depends=('python>=2.6.4')
groups=('multimedia-extra')
options=('noversrc')
up2date="lynx -dump -listonly http://bitbucket.org/rg3/youtube-dl/downloads/ | grep -m1 200 | sed 's/.*20/20/; s/\.zip//g'"
source=(http://bitbucket.org/rg3/youtube-dl/raw/$pkgver/youtube-dl)
sha1sums=('cf0e7ef6bf04ec8dc7033b86de11192263f062ae')

build() {
	Finstall 755 youtube-dl /usr/bin/youtube-dl
}

# Optimization OK
