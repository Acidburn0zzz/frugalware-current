pkgname=mp3splt-gtk
pkgver=0.5.4
pkgrel=1
pkgdesc="mp3splt-gtk is a interface for mp3splt, a utility for mp3/ogg splitting without decoding"
_F_sourceforge_dirname="mp3splt"
Finclude sourceforge
depends=('gtk+2' 'glibc' 'libxau' 'libxdmcp' 'freetype2' 'libmp3splt' 'libxdamage' 'libxext' 'libxml2' 'audacious' 'atk' 'pango' 'zlib' 'audacious' 'libmowgli' 'dbus' 'libxinerama' 'libxi' 'libxrandr' 'libxcursor')
groups=('multimedia-extra')
archs=('i686')
Fconfopts="--enable-audacious"
sha1sums=('3f4481a705ecb6c96050b4c39f7e117dc2d0384f')

build() {
  Fcd
  ./configure $Fconfopts || Fdie
  cd src || Fdie
  make || Fdie
  Fmakeinstall
}

# optimization OK
