# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=aacplusenc
pkgver=0.17.1
pkgrel=1
pkgdesc="An AAC+ encoder which outputs raw AAC"
url="http://teknoraver.net/software/mp4tools/"
depends=('fftw')
groups=('multimedia-extra')
archs=('i686')
up2date="Flasttar $url"
source=(http://teknoraver.net/software/mp4tools/$pkgname-$pkgver.tar.bz2)
sha1sums=('47a88050adb254dd8d4fe7fc3e2585f939aa3869')

build() {
	Fcd
	Fsed "/usr/local" "$Fdestdir/usr" Makefile
	Fmkdir usr/bin
	Fbuild
}
