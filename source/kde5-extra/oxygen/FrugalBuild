pkgname=oxygen
pkgver=5.7.3
pkgrel=1
pkgdesc="KDE Oxygen style."
groups=('plasma')
archs=('i686' 'x86_64')
_F_kde_project="plasma"
Finclude kf5
groups=('kde5-extra')
depends=("frameworkintegration>=$_F_kf5_full" "kwin5>=$_F_kdever_plasma")
makedepends+=('kdoctools')
rodepends+=("phonon-backend-gstreamer" "phonon-backend-vlc")

sha1sums=('60da9939816d877fa361b65042115b53cba07a08')

conflicts=('kdebase-runtime-knotify' 'liboxygen' 'oxygen-transparent')
replaces=("${conflicts[@]}")

subpkgs=("$pkgname-sounds")
subdescs=("$pkgname sound package for KDE")
subgroups=('plasma')
subarchs=('x86_64 i686')
subdepends=(' ')

build()
{
	KDE_build
	Fsplit $pkgname-sounds usr/share/sounds
}

# optimization OK
