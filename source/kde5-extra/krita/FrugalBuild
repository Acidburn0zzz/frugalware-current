# Compiling Time: 0.61 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=krita
pkgver=3.0.1.1
pkgrel=2
pkgdesc="Krita is a FREE sketching and painting program"
url="https://krita.org/"
archs=('x86_64' 'i686')
depends=('libgomp' 'libboost' 'gsl' 'exiv2' 'kio' 'opencolorio' 'openexr' 'poppler-qt5>=0.47.0' \
	'libraw' 'libboost>=1.61.0' 'qt5-svg>=5.7.0-2' 'qt5-x11extras>=5.7.0-2' 'karchive' 'kcompletion' 'kconfig' \
	'kcoreaddons' 'kcrash' 'kdbusaddons' 'kguiaddons' 'ki18n' 'kitemviews' 'kservice' \
	'kwidgetsaddons' 'kwindowsystem' 'nghttp2')
makedepends+=('vc>=0.7.5-3' 'boost>=1.61.0' 'x11-protos' 'eigen' 'kitemmodels')
## do not remove -DTARGET_ARCHITECTURE='none' , ever
_F_cmake_confopts+=" -DTARGET_ARCHITECTURE='none' -DPACKAGERS_BUILD=true"
Finclude  kf5
groups=('kde5-extra')
up2date="Flastverdir $_F_kde_mirror/stable/$pkgname"
source=($_F_kde_mirror/stable/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz fix-boost-compile-error-with-qt5.7.patch)
sha1sums=('3c74e74ca4d9c486c51f75f7808177469c377072' \
          '4ef5aa2240d09fbeec91910e584caa7a97dad46c')

CXXFLAGS+=" -std=c++11"
## TODO: sort depends even more once 3.1.0 is released
##       change default look to breeze or whatever we use the time

build() {

	Fcd
	KDE_build
	## conflicts with breeze package ..
	Frm usr/share/color-schemes/{BreezeDark.colors,BreezeHighContrast.colors}

}
# optimization OK
