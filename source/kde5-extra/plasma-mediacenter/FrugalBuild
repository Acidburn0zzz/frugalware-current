pkgrel=2
pkgdesc="A mediacenter user interface based on KDE Plasma components"
groups=('plasma')
archs=('i686' 'x86_64')
_F_kde_project="plasma"
Finclude kf5
source=(http://download.kde.org//stable/plasma/$pkgver/plasma-mediacenter-$pkgver.tar.xz)
groups=('kde5-extra')
sha1sums=('8809a0023ecf4e6e92494e4a98fbb5dd4cc8ecb9')
depends=("kcoreaddons>=$_F_kf5_full" "kconfig>=$_F_kf5_full" \
	"ki18n>=$_F_kf5_full" "kguiaddons>=$_F_kf5_full" \
	"kservice>=$_F_kf5_full" "kio>=$_F_kf5_full" \
	"kdeclarative>=$_F_kf5_full" "kactivities5>=$_F_kf5_full"
	"plasma-framework>=$_F_kde_ver" "baloo5>=$_F_kf5_full" \
	"qt5-multimedia>=$_F_kdever_qt5")

build() {

	Fcd
	KDE_build
	## crashes a lot we can use it from plasma also
	## but until is more mature don't try to use it as own session
	Frm usr/share/xsessions/plasma-mediacenter.desktop
}
