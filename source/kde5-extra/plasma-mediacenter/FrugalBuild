Finclude kf5
groups=('kde5-extra')
sha1sums=('6d0b17531c977eb9f9435335e828ebeabfd522ab')
depends=("kcoreaddons>=$_F_kf5_full" "kconfig>=$_F_kf5_full" \
	"ki18n>=$_F_kf5_full" "kguiaddons>=$_F_kf5_full" \
	"kservice>=$_F_kf5_full" "kio>=$_F_kf5_full" \
	"kdeclarative>=$_F_kf5_full" "kactivities5>=$_F_kf5_full"
	"plasma-framework>=$_F_kde_ver" "baloo5>=$_F_kf5_full" \
	"qt5-multimedia>=$_F_kdever_qt5")

build() {

	Fcd
	KDE_build
	## crashes a lot we can use it from plasma also
