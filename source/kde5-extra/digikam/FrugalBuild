pkgrel=1
pkgdesc="Digital photo management application for kde"
up2date="Flasttar http://vesta.informatik.rwth-aachen.de/ftp/pub/mirror/kde/unstable/$pkgname/"
_F_cmake_confopts="     -DENABLE_OPENCV3=on"
_F_scm_type="git"
_F_scm_url="git://anongit.kde.org/$pkgname"
Finclude kf5 scm
groups=('kde5-extra')
archs=('i686' 'x86_64')
depends=('opencv' 'libkipi' "kfilemetadata5>=$_F_kdever_qt5" 'libpgf' "knotifyconfig>=$_F_kdever_qt5" \
	 'marble' 'liblqr' 'lensfun' 'libksane' 'kdepimlibs')
makedepends+=('boost' 'doxygen' "qt5-multimedia>=$_F_kdever_qt5")
unset source

replaces=("kipi-plugins")
conflicts=("${replaces[@]}")

options+=('force')

build()
{
        Funpack_scm
        KDE_build
}

