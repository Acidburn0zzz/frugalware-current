pkgname=digikam
pkgver=5.3.0
pkgrel=1
pkgdesc="Digital photo management application for kde"
url="https://www.digikam.org"
#not yet on kde.org as source tarball
source=(https://github.com/KDE/digikam/archive/v${pkgver}.tar.gz)
_F_cmake_confopts+=" -DENABLE_OPENCV3=ON"
up2date="Flasttar http://download.kde.org/stable/digikam/"
Finclude  kf5 cmake
groups=('kde5-extra')
archs=('i686' 'x86_64')
depends=('opencv>=3.1.0-7' 'libkipi' "kfilemetadata5>=$_F_kdever_qt5" 'libpgf' "knotifyconfig>=$_F_kdever_qt5" \
	 "marble>=$_F_kdever_apps" 'liblqr' 'lensfun' "libksane>=$_F_kdever_apps" "akonadi-contacts>=$_F_kdever_apps")
makedepends+=('boost' 'doxygen' "qt5-multimedia>=$_F_kdever_qt5")
sha1sums=('b5f0445e9c526f19f4f840cdc2189d385d5a3eba')

replaces=("kipi-plugins")
conflicts=("${replaces[@]}")

