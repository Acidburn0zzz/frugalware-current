Finclude e17-cvs
source="http://jercel16.free.fr/public/frugalware/$pkgname-$pkgver.tar.gz"
sha1sums=('140a9fc3538a28608ba699dfaee70f5bb2cf6601')

subpkgs=("${subpkgs[@]}" "e17-snow")
