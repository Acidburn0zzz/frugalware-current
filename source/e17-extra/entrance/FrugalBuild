# Compiling time: ~0.29 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=entrance
pkgver=20061124
pkgrel=1
pkgdesc="Entrance is a login manager for E17."
depends=('edje' 'imlib2' 'esmart')
groups=('e17-extra' 'e17-apps')
archs=('i686' 'x86_64')
Finclude e17-cvs
source=(${source[@]} session_config.patch0 README.Frugalware)
backup=(etc/entrance_config.cfg)

build() {
	Fcd $pkgname
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
	Frm /etc/init.d
	Frm /etc/pam.d
}
sha1sums=('121677b6df47b4d6873fdcea9aaa287911399b0a' \
	  'ad6cc35ca69295aad6e6d8ee816a1f443b1dc95e' \
	  '1c9fc761441c99a6d285d7008073e2e0adaee790')

# optimization OK
