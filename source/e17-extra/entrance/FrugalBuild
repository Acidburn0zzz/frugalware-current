pkgname=entrance
pkgver=0.9.0.013
pkgrel=1
pkgdesc="Entrance is a login manager for E17."
depends=('esmart>=0.9.0.011' 'efreet>=0.0.3.006')
groups=('e17-extra' 'e17-apps')
archs=('i686' 'x86_64')
Finclude e17
source=(${source[@]} session_config.patch0 README.Frugalware)
backup=(etc/entrance_config.cfg)

build() {
	Fcd
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
	Frm /etc/init.d
	Frm /etc/pam.d
}
sha1sums=('30ef78cde206dc96f4e5773208d69102eccf994c' \
          'ad6cc35ca69295aad6e6d8ee816a1f443b1dc95e' \
