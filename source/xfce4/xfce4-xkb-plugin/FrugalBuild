# XFCE Build Environment - xfce4-xkb-plugin
# Last modified: Wed, 31 Aug 2005 11:08:59 +0200
# Build time: 0.14 SBU
# Maintainer: Krisztian VASAS <iron@ironiq.hu>

pkgname=xfce4-xkb-plugin
pkgver=0.3.2
pkgrel=2
pkgdesc="A keyboard layout plugin for the Xfce4 panel"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
archs=('i686' 'x86_64')
depends=('xfce4-panel')
Finclude xfce4
source=($dlurl/$pkgname-$pkgver.tar.gz)
sha1sums=('5fbd346e4fe8a219c77bda933b65de129d5288f0')

build() {
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fbuild || return 1
}

# optimalization OK

