# XFCE Build Environment - xfce4-xkb-plugin
# Last modified: Tue, 08 Feb 2005 01:07:38 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 7.279u
pkgname=xfce4-xkb-plugin
pkgver=0.3.2
pkgrel=2
official=0
goodies=1
pkgdesc="A keyboard layout plugin for the Xfce4 panel"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
archs=('i686')
depends=('xfce4-panel')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://download.berlios.de/xfce-goodies/$pkgname-$pkgver.tar.gz)

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('b233819d685ab3b7f4a47c2da9fb6936')
