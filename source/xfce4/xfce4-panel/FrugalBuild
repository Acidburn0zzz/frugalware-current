# XFCE Build Environment - xfce4-panel
# Last modified: Fri, 25 Mar 2005 08:11:02 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 25.843u
pkgname=xfce4-panel
pkgver=4.2.1.1
pkgrel=2
xfcever=4.2.1.1
official=1
pkgdesc="Panel for the Xfce4 desktop environment"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
depends=('libxfcegui4' 'libxfce4mcs')
makedepends=('xfce-mcs-manager')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://www.xfce.org/archive/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz \
	$pkgname-hungarian_translation.diff)
md5sums=('93986465cd92a9f32de60a44718a249e' '9c83f89ebfb908101ad9a154060bd096')

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  for i in `ls contents.xml*`
  do 
    mv $i ${i}_tmp
    cat ${i}_tmp | sed 's/>mozilla</>firefox</g; s/Mozilla /Firefox /g; s/>mozilla -mail</>thunderbird</g' > $i
    rm ${i}_tmp
  done
  patch -p1 -i $startdir/$pkgname-hungarian_translation.diff
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}


# vim: ft=sh
