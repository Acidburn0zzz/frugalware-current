# XFCE Build Environment - xfce4-panel
# Last modified: Fri, 17 Jun 2005 12:40:22 +0000
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 25.843u
pkgname=xfce4-panel
pkgver=4.2.2
pkgrel=3
xfcever=4.2.2
official=1
pkgdesc="Panel for the Xfce4 desktop environment"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
depends=('libxml2' 'libxfcegui4' 'startup-notification' 'libxfce4mcs')
makedepends=('xfce-mcs-manager')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://public.fh-wolfenbuettel.de/~luedickj/xfce4/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz)
md5sums=('50699e6c8e4a79f0a4f962e12559c9d0')

build() {
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fcd
	for i in `ls contents.xml*`
	    do 
		mv $i ${i}_tmp
		cat ${i}_tmp | sed 's/>mozilla</>firefox</g; s/Mozilla /Firefox /g; s/>mozilla -mail</>thunderbird</g' > $i
		rm ${i}_tmp
	    done
	Fmake --sysconfdir=/etc || return 1
	Fmakeinstall || return 1
}

# vim: ft=sh
