pkgname=xfce4-panel
pkgver=4.2.3
pkgrel=1
pkgdesc="Panel for the Xfce4 desktop environment"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
depends=('pango' 'atk' 'libxml2' 'libxfcegui4' 'libxfce4mcs')
makedepends=('xfce-mcs-manager')
Finclude xfce4
source=($dlurl/$pkgname-$pkgver.tar.gz)
sha1sums=('d42a9e3c66b49c8fd4dcb15cd0b8776a60dd43c3')

build()
{
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fsed ">mozilla<" ">firefox<" contents.xml*
	Fsed "Mozilla " "Firefox " contents.xml*
	Fsed ">mozilla -mail<" ">thunderbird<" contents.xml*
	Fbuild
}

# vim: ft=sh

# optimalization OK
