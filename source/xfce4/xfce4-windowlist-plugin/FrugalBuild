# XFCE Build Environment - xfce4-windowlist-plugin
# Last modified: Tue, 08 Feb 2005 01:05:00 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 6.202u
pkgname=xfce4-windowlist-plugin
pkgver=0.1.0
pkgrel=1
official=0
goodies=1
pkgdesc="A Windowlist plugin for the Xfce4 panel"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
depends=('xfce4-panel')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://download.berlios.de/xfce-goodies/$pkgname-$pkgver.tar.gz)

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('29b1a752003734c0b8171200dfafb733')
