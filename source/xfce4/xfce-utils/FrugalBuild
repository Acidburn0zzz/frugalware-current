# XFCE Build Environment - xfce-utils
# Last modified: Fri, 15 Apr 2005 23:26:44 +0200
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 14.587u
pkgname=xfce-utils
pkgver=4.2.1
pkgrel=3
xfcever=4.2.1.1
official=1
pkgdesc="Utilities for Xfce4"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
depends=('libxfcegui4' 'libxfce4mcs')
makedepends=('xfce-mcs-manager')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://www.xfce.org/archive/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz \
	$pkgname-hungarian_translation.diff)
md5sums=('73b75582ab05f443e3106d4d661207e9' 'f681976ce66c9a1268a750ea4143b4ec')

build()
{
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fbuild || return 1
	Fexerel scripts/xinitrc /etc/X11/xinit/xinitrc.xfce4
}

