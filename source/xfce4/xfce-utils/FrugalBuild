pkgname=xfce-utils
pkgver=4.5.90
pkgrel=1
pkgdesc="Utilities for Xfce4."
depends=('libxfcegui4>=4.5.90' 'libxfce4util>=4.5.90' 'dbus')
makedepends=('perl-xml')
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
_F_gnome_desktop=y
_F_gnome_iconcache=y
Finclude xfce4 gnome-scriptlet
options=('genscriptlet')
Fconfopts="$Fconfopts --enable-dbus"
sha1sums=('a1e403408b76e708523fd7bbd420bcb43e6bd693')

build()
{
	Fbuild
	Finstallrel 755 $Fdestdir/etc/xdg/xfce4/xinitrc etc/X11/xinit/xinitrc.xfce4
	Fbuild_gnome_scriptlet
}

# optimization OK
