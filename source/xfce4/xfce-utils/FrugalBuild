# XFCE Build Environment - xfce-utils
# Last modified: Mon, 16 May 2005 22:27:38 +0200
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 14.587u
pkgname=xfce-utils
pkgver=4.2.2
pkgrel=1
xfcever=4.2.2
official=1
pkgdesc="Utilities for Xfce4"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
depends=('libxfcegui4' 'libxfce4mcs')
makedepends=('xfce-mcs-manager')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://public.fh-wolfenbuettel.de/~luedickj/xfce4/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz)

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('585e1fd48dee70c50271ac478e8adcd0')
