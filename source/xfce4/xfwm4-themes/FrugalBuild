# XFCE Build Environment - xfwm4-themes
# Last modified: Fri, 25 Mar 2005 09:03:55 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 12.245u
pkgname=xfwm4-themes
pkgver=4.2.1
pkgrel=2
xfcever=4.2.1.1
official=1
pkgdesc="A set of additionnal themes for the Xfce4 window manager"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
depends=('xfwm4')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://www.xfce.org/archive/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

#vim: ft=sh
