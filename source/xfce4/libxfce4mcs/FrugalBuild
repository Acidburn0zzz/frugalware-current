# XFCE Build Environment - libxfce4mcs
# Last modified: Fri, 25 Mar 2005 08:03:59 +0100
# Build time: 10.524u
# Maintainer: Krisztian VASAS <slinky@rei.keni.hu>
pkgname=libxfce4mcs
pkgver=4.2.1
pkgrel=2
xfcever=4.2.1.1
official=1
pkgdesc="Multi-channel settings management support for Xfce4"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
depends=('libxfce4util')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://www.xfce.org/archive/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz)

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr/
  make || return 1
  make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
