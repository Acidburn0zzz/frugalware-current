# XFCE Build Environment - libxfce4mcs
# Last modified: Tue, 07 Jun 2005 18:49:18 +0000
# Build time: 10.524u
# Maintainer: Krisztian VASAS <slinky@rei.keni.hu>
pkgname=libxfce4mcs
pkgver=4.2.2
pkgrel=1
xfcever=4.2.2
official=1
pkgdesc="Multi-channel settings management support for Xfce4"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
depends=('libxfce4util')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://public.fh-wolfenbuettel.de/~luedickj/xfce4/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz)

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr/
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('06c3d8ea6826d9a2fbcc1da6b86f1361')
