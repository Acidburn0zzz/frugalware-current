# Compiling Time: 0 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=xfce-frugalware
pkgver=0.2.2
pkgrel=1
pkgdesc="Default Xfce artwork for Frugalware"
url="http://frugalware.org/"
rodepends=('gtk+2-engines' 'gtk+2-engines-rezlooks' 'tango-icon-theme')
depends=()
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
up2date="$pkgver"
source=(http://frugalware.org/~priyank/$pkgname-$pkgver.tar.bz2)
sha1sums=('2a56860bbc1b4ec54d0de1edc25aa5d748da2ef5')

build() {
	Fcd
	Fmkdir /usr/share/{themes,xfce4/backdrops}
	Fcprrel xfce-frugalware_1.png /usr/share/xfce4/backdrops/
	Fcprrel xfce-frugalware_2.png /usr/share/xfce4/backdrops/
	Fcprrel Frugalware /usr/share/themes/
	Fcprrel Frugalware-Flat /usr/share/themes
}
