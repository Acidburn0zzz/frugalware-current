# XFCE Build Environment - xfce4-datetime-plugin
# Last modified: Tue, 08 Feb 2005 00:11:54 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 6.477u
pkgname=xfce4-datetime-plugin
pkgver=0.3.1
pkgrel=2
official=0
goodies=1
pkgdesc="A additional clock for the Xfce4 panel that shows also dates"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
depends=('xfce4-panel')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://download.berlios.de/xfce-goodies/$pkgname-$pkgver.tar.gz)

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('92b7ebee7f0c8074f5cf590f77f676f2')
