pkgname=libxfce4util
pkgver=4.2.2
pkgrel=1
xfcever=4.2.2
official=1
pkgdesc="Basic utility non-GUI functions for Xfce4"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
depends=('glib2')
install=$pkgname.install
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://public.fh-wolfenbuettel.de/~luedickj/xfce4/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz \
	xfce4.sh)
sha1sums=('49d945fb79870159deea73c98cc6e34f537cd2ab' \
          'da39a3ee5e6b4b0d3255bfef95601890afd80709')

build() {
	Fbuild
	Fexe /etc/profile.d/xfce4.sh
}

# optimalization OK

