# XFCE Build Environment - libxfce4util
# Last modified: Mon, 16 May 2005 22:13:12 +0200
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 13.564u
pkgname=libxfce4util
pkgver=4.2.2
pkgrel=1
xfcever=4.2.2
official=1
pkgdesc="Basic utility non-GUI functions for Xfce4"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
depends=('glib2')
install=$pkgname.install
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://public.fh-wolfenbuettel.de/~luedickj/xfce4/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz xfce4.profile)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  mkdir -p $startdir/pkg/etc/profile.d
  install -D -m755 ../xfce4.profile $startdir/pkg/etc/profile.d/xfce4.sh
}

md5sums=('5f27635aa0ba5e40ffaf3031b530b36b' 'd41d8cd98f00b204e9800998ecf8427e')
