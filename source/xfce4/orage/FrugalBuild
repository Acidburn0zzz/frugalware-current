pkgname=orage
pkgver=4.4.0
pkgrel=1
pkgdesc="A Time-managing application for the Xfce Desktop Environment."
makedepends=('xfce-mcs-manager>=4.4.0')
depends=('libxfce4mcs>=4.4.0' 'libxfcegui4>=4.4.0' 'xfce4-panel>=4.4.0')
groups=('xfce4' 'xfce4-core')
conflicts=('xfcalendar')
replaces=('xfcalendar')
archs=('i686' 'x86_64')
Finclude xfce4
sha1sums=('788672251ea5dac102fc24a845cde7f53b35abf3')

build()
{
	Fbuild
	echo "OnlyShowIn=XFCE;" >> $Fdestdir/usr/share/applications/xfcalendar.desktop
}

# optimization OK
