makedepends=('xfce-mcs-manager>=4.3.99.1')
depends=('libxfce4mcs>=4.3.99.1' 'libxfcegui4>=4.3.99.1' 'xfce4-panel>=4.3.99.1')
groups=('xfce4' 'xfce4-core')
