pkgname=lightdm-gtk-greeter
pkgver=1.1.5
pkgrel=1
pkgdesc="GTK+ greeter for LightDM"
depends=('gtk+3')
makedepends=('intltool' 'gobject-introspection' 'lightdm')
groups=('xfce4')
archs=('i686' 'x86_64')
Finclude launchpad
backup=('etc/lightdm/lightdm-gtk-greeter.conf')
source=($source lightdm-gtk-greeter.conf)
sha1sums=('be515e19514b9826ddc4bb8767c30ba90045d1cc' \
          '5c3b3912e8ddc53cdafa8cb7ce27ceea7bb6bdc3')

build() {
	Fbuild
	Finstall 644 lightdm-gtk-greeter.conf etc/lightdm/
}

