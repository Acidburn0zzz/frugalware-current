pkgname=xfce4-diskperf-plugin
pkgver=1.5
pkgrel=2
pkgdesc="Plugin for the Xfce4 panel displaying instant disk/partition performance"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
archs=('i686' 'x86_64')
depends=('xfce4-panel')
Finclude xfce4
source=($dlurl/$pkgname-$pkgver.tar.gz)
sha1sums=('1c1f2bea61d48c5a5ac25dd072d5734af0491854')

build() {
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fbuild || return 1
}

# optimalization OK

