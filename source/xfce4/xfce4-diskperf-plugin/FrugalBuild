# XFCE Build Environment - xfce4-diskperf-plugin
# Last modified: Tue, 08 Feb 2005 00:15:23 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 7.266u
pkgname=xfce4-diskperf-plugin
pkgver=1.5
pkgrel=2
official=0
goodies=1
pkgdesc="Plugin for the Xfce4 panel displaying instant disk/partition performance"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
depends=('xfce4-panel')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://download.berlios.de/xfce-goodies/$pkgname-$pkgver.tar.gz)

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('cb1b2637166b8a4355b3df85e593640f')
