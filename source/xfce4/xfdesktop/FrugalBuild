pkgname=xfdesktop
pkgver=4.4.2
pkgrel=1
pkgdesc="A desktop manager for Xfce4."
depends=('libxml2' 'libxfcegui4>=4.4.2' 'libxfce4mcs>=4.4.2' \
	'dbus' 'thunar>=0.9.0-1' 'libexo>=0.3.4-1')
makedepends=('xfce4-panel>=4.4.2' 'xfce-mcs-manager>=4.4.2')
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
Finclude xfce4
source=(${source[@]} \
	xfce4_frugalware.patch \
	xfdesktop-4.4.0-bgimage.patch \
	xfce4-fw.png)

build()
{
	Fbuild
	Ficon xfce4-fw.png
}

