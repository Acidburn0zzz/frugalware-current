# XFCE Build Environment - xfce4-appfinder
# Last modified: Thu, 17 Mar 2005 15:21:45 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 
pkgname=xfce4-appfinder
pkgver=4.2.1
pkgrel=1
xfcever=4.2.1
official=1
pkgdesc="Utilities and additions for the Xfce4 panel"
groups=('xfce4' 'xfce4-core')
depends=()
url="http://www.xfce.org/"
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://www.xfce.org/archive/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('5077312a6390d20b9d0d44cc0891ee96')
