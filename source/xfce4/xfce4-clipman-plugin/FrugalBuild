# XFCE Build Environment - xfce4-clipman-plugin
# Last modified: Wed, 31 Aug 2005 08:23:48 +0200
# Build time: 0.10 SBU
# Maintainer: Krisztian VASAS <iron@frugalware.org>

pkgname=xfce4-clipman-plugin
pkgver=0.4.1
pkgrel=2
pkgdesc="A clipboard plugin for the Xfce4 panel"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
archs=('i686' 'x86_64')
depends=('xfce4-panel')
Finclude xfce4
source=($dlurl/$pkgname-$pkgver.tar.gz)
sha1sums=('3de3a457286471d3d873bed77bf5c8a0f125b409')

build() {
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fbuild || return 1
}

# optimalization OK

