# XFCE Build Environment - xfce4-artwork
# Last modified: Mon, 07 Feb 2005 23:58:24 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 0.912u
pkgname=xfce4-artwork
pkgver=0.0.4
pkgrel=2
official=0
goodies=1
pkgdesc="Backdrops for the Xfce4 desktop"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
depends=('xfdesktop')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://download.berlios.de/xfce-goodies/$pkgname-$pkgver.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg/ install
}
md5sums=('7b5d96c987a61b1a847b2010b1947244')
