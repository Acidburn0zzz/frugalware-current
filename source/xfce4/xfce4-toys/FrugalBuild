pkgname=xfce4-toys
pkgver=4.2.3
pkgrel=1
pkgdesc="Utilities and additions for the Xfce4 panel"
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
depends=('libxfcegui4' 'xfce4-panel')
url="http://www.xfce.org/"
Finclude xfce4
source=($dlurl/$pkgname-$pkgver.tar.gz)
sha1sums=('bbc6069d2a3762e23d48ef8617c9dafa355b7f7a')

build()
{
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fbuild || return 1
}

# optimalization OK

