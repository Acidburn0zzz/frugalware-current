# XFCE Build Environment - xfce4-xmms-plugin
# Last modified: Mon, 23 May 2005 23:20:15 +0200
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 4.711u
pkgname=xfce4-xmms-plugin
pkgver=0.1.1
pkgrel=3
official=0
goodies=1
pkgdesc="An XMMS control plugin for the Xfce4 panel"
depends=('xfce4-panel' 'songplayer')
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
archs=('i686')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://download.berlios.de/xfce-goodies/$pkgname-$pkgver.tar.bz2)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg/ install
}
md5sums=('7d852c49b74170cd662afabd86f40e8d')
