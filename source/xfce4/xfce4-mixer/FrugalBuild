pkgname=xfce4-mixer
pkgver=4.2.3
pkgrel=1
pkgdesc="The volume control plugin for the Xfce4 panel"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
depends=('libxml2' 'libxfcegui4' 'libxfce4mcs')
makedepends=('xfce4-panel' 'xfce-mcs-manager')
Finclude xfce4
source=($dlurl/$pkgname-$pkgver.tar.gz)
sha1sums=('80e0da399bf7cb9617f914b285f87266e9b1428f')

build()
{
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fbuild
}

