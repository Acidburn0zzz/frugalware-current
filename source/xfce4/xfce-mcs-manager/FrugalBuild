# XFCE Build Environment - xfce-mcs-manager
# Last modified: Fri, 25 Mar 2005 08:05:31 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 8.838u
pkgname=xfce-mcs-manager
pkgver=4.2.1
pkgrel=2
xfcever=4.2.1.1
official=1
pkgdesc="A multi channel settings manager for Xfce4"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
depends=('libxfcegui4' 'libxfce4mcs')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://www.xfce.org/archive/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz \
	$pkgname-hungarian_translation.diff)
md5sums=('72b68d04bd5ec76fd0a147f824ee049c' '5b8add49cb199007c36c71ee4aab18cb')

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 -i $startdir/$pkgname-hungarian_translation.diff
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
