# XFCE Build Environment - xfce4-session
# Last modified: Fri, 25 Mar 2005 08:43:10 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 30.207u
pkgname=xfce4-session
pkgver=4.2.1
pkgrel=2
xfcever=4.2.1.1
official=1
pkgdesc="A desktop manager for Xfce4"
url="http://www.xfce.org/"
#depends=('startup-notification' 'libxfcegui4' 'libxfce4util')
depends=('freetype2' 'gtk+2' 'pango' 'atk' 'x' 'libxfce4util' 'fontconfig' 'expat' 'libxfcegui4' 'glib2' 'startup-notification' 'zlib')
groups=('xfce4' 'xfce4-core')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://www.xfce.org/archive/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz \
	$pkgname-hungarian_translation.diff)
md5sums=('d9941a2a2e85a05e4e8677301db0ab2a' '03a789e915aa0f3402c55b5c5968d4ec')

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 -i $startdir/$pkgname-hungarian_translation.diff
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

