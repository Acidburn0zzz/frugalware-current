pkgname=thunar
_F_xfce_name=Thunar
_F_archive_name=Thunar
pkgver=1.3.2
pkgrel=3
pkgdesc="Thunar is a modern file manager for Xfce4."
makedepends=('intltool' 'gtk-doc' 'xfce4-panel>=4.9.0' \
	'xfce4-dev-tools>=4.9.0')
depends=('libexo>=0.7.2' 'gtk+2>=2.20.1-1' 'gamin' 'libxfce4util>=4.9.0' \
	'hicolor-icon-theme' 'dbus-glib>=0.80' 'xfconf>=4.9.0' \
	'libexif>=0.6.17' 'xfce4-panel>=4.9.0' 'glib2>=2.18.4' 'libexif' \
	'libnotify>=0.7' 'udev' 'libpng' 'polkit')
rodepends=('gvfs' 'polkit-gnome')
groups=('xfce4' 'xfce4-core')
conflicts=('xffm')
replaces=('xffm' 'thunar-vfs')
options=('force')
archs=('i686' 'x86_64')
_F_gnome_iconcache=y
Finclude xfce4 gnome-scriptlet
_F_cd_path="$_F_xfce_name-$pkgver"
Fconfopts="$Fconfopts --disable-debug \
	--enable-gio-unix \
	--enable-dbus \
	--enable-startup-notification \
	--enable-gudev \
	--enable-notifications \
	--enable-exif \
	--enable-pcre \
	--enable-gtk-doc"
sha1sums=('47e0e378f5524ed051d7043b65b5e7b20e63d830')

## bug fix release
source=(http://archive.xfce.org/src/xfce/$pkgname/1.3/$_F_archive_name-$pkgver.tar.bz2)

build() {
  Fbuild
  sed -i 's:x-directory/gnome-default-handler;::' \
    $Fdestdir/usr/share/applications/Thunar-folder-handler.desktop || Fdie

  Fbuild_gnome_scriptlet
}

# optimization OK
