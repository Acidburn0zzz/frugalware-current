# XFCE Build Environment - xfwm4
# Last modified: Wed, 08 Jun 2005 10:58:10 +0000
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 41.017u
pkgname=xfwm4
pkgver=4.2.2
pkgrel=1
xfcever=4.2.2
official=1
pkgdesc="A window manager compatable with Gnome, Gnome2, KDE2, KDE3 and Xfce4"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
depends=('xfce-mcs-manager')
depends=('libxfcegui4' 'startup-notification' 'libxfce4mcs')
makedepends=('xfce-mcs-manager')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://public.fh-wolfenbuettel.de/~luedickj/xfce4/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz xfce4.desktop)

build() {
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fbuild || return 1
	install -D -m644 {..,$startdir/pkg/etc/X11/sessions}/xfce4.desktop
}
md5sums=('e4c91c59da7d1bdc6141cde3263ea6f9' '5d6503dedd1a32a2c96ddf8027bbb0d4')
