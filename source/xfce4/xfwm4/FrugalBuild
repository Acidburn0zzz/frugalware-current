# XFCE Build Environment - xfwm4
# Last modified: Tue, 05 Apr 2005 17:41:49 +0200
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 41.017u
pkgname=xfwm4
pkgver=4.2.1
pkgrel=2
xfcever=4.2.1
official=1
pkgdesc="A window manager compatable with Gnome, Gnome2, KDE2, KDE3 and Xfce4"
url="http://www.xfce.org/"
groups=('xfce4' 'xfce4-core')
depends=('xfce-mcs-manager')
makedepends=('xfce-mcs-manager')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://www.xfce.org/archive/xfce-$xfcever/src/$pkgname-$pkgver.tar.gz xfce4.desktop \
	$pkgname-hungarian_translation.diff)
md5sums=('a45792df95944d6bd15ff5c23ec26e1b' '5d6503dedd1a32a2c96ddf8027bbb0d4'\
	 '5cc80bc2c31e7797bdca78768bc3eaaf')

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 -i $startdir/$pkgname-hungarian_translation.diff
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -D -m644 {..,$startdir/pkg/etc/X11/sessions}/xfce4.desktop
}
# vim: ft=sh
