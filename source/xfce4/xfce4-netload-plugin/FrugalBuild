# XFCE Build Environment - xfce4-netload-plugin
# Last modified: Thu, 19 May 2005 12:52:31 +0200
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 9.270u
pkgname=xfce4-netload-plugin
pkgver=0.3.2
pkgrel=1
official=0
goodies=1
pkgdesc="A netload plugin for the Xfce4 panel"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
depends=('xfce4-panel')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://download.berlios.de/xfce-goodies/$pkgname-$pkgver.tar.bz2)

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('755dcc170fb33274378c7b110cf21f56')
