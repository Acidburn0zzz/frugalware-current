options+=('asneeded')

pkgname=garcon
pkgver=0.3.0
pkgrel=1
pkgdesc="implementation of the freedesktop.org menu specification"
rodepends=('frugalware-menus')
makedepends=('pkgconfig' 'intltool' 'xfce4-dev-tools>=4.11.0')
depends=('glib2' 'zlib' 'libxfce4ui')
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
_F_gnome_iconcache=y
_F_xfce_ver="0.3"
Finclude xfce4 gnome-scriptlet
#up2date="Flasttar http://archive.xfce.org/src/libs/$pkgname/0.2/"
source=($source $pkgname.sh \
	frugalware_category.patch)
sha1sums=('c0ff6ccd33fbb2db6a13a06a71731c191ce0dfb2' \
          '2c9027c06d6045f5615c4777a47d128aef1df2d5' \
          '7bfc4e2d1283bf7e7c46377e6e7633570e71a93f')
replaces=('libxfce4menu')
# optimization OK

build() {
	Fbuild
	Fexe /etc/profile.d/$pkgname.sh
	Fbuild_gnome_scriptlet
}


