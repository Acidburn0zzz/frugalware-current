# XFCE Build Environment - xfce4-wavelan-plugin
# Last modified: Tue, 08 Feb 2005 00:58:22 +0100
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 8.332u
pkgname=xfce4-wavelan-plugin
pkgver=0.4.1
pkgrel=2
official=0
goodies=1
pkgdesc="A wireless network plugin for the Xfce4 panel"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
archs=('i686')
depends=('xfce4-panel')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://download.berlios.de/xfce-goodies/$pkgname-$pkgver.tar.gz)

build() {
  [ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('0467e03696e88c4a8c81873e907a3972')
