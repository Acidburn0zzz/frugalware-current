# XFCE Build Environment - xfce4-cpugraph-plugin
# Last modified: Wed, 08 Jun 2005 13:20:26 +0000
# Maintainer: Krisztian VASAS <iron@ironiq.hu>
# Build time: 6.076u
pkgname=xfce4-cpugraph-plugin
pkgver=0.2.2
pkgrel=2
official=0
goodies=1
pkgdesc="CPU graph plugin for the Xfce4 panel"
url="http://xfce-goodies.berlios.de/"
groups=('xfce4' 'xfce4-goodies')
archs=('i686' 'x86_64')
depends=('xfce4-panel')
[ -e ../up2date.xfce ] && . ../up2date.xfce
source=(http://download.berlios.de/xfce-goodies/$pkgname-$pkgver.tar.gz)

build() {
	cd $startdir/src/$pkgname
	[ -f /etc/profile.d/xfce4.sh ] && . /etc/profile.d/xfce4.sh
	Fmake || return 1
	Fmakeinstall || return 1
}
md5sums=('bde4c578ef469aade3f6b58a9bde8ec6')
