# Compiling Time: 0.37 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=audacious
pkgver=3.0.4
pkgrel=1
pkgdesc="Audacious is a fork from BMP 0.9.7.1"
url="http://audacious-media-player.org"
depends=('dbus-glib' 'gtk+2>=2.20.0-2' 'libxau' 'libxdmcp' 'libmcs>=0.7.2-3' 'libxext>=1.0.5-3' \
	'libstdc++' 'libxdamage>=1.1.1-3' 'libice>=1.0.5-2' 'util-linux' 'libguess>=1.0-2')
rodepends=('audacious-plugins')
groups=('xmultimedia-extra')
_F_gnome_iconcache=y
Finclude gnome-scriptlet
archs=('i686' 'x86_64')
options=('scriptlet' 'force' 'genscriptlet')
conflicts=('bmp' 'bmp-docklet' 'bmp-mac')
replaces=('bmp' 'bmp-docklet' 'bmp-mac')
up2date="Flasttar http://distfiles.atheme.org"
source=(http://distfiles.atheme.org/$pkgname-$pkgver.tar.bz2)
sha1sums=('4e5fae499a08ca85a7b7761ad70f24eae8b1d452')

build()
{
	if [ "$CARCH" == "i686" ]; then
		opts="--disable-sse2"
	fi
	Fbuild $opts
	Fbuild_gnome_scriptlet
}

# optimization OK
