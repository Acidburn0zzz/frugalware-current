pkgname=audacious
pkgver=1.3.2
pkgrel=2
pkgdesc="Audacious is a fork from BMP 0.9.7.1"
url="http://audacious-media-player.org/"
depends=('gtk+2>=2.10.2' 'taglib' 'libglade' 'libxml2' 'glib2>=2.12.8' 'libmcs')
rodepends=('audacious-plugins')
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
conflicts=('bmp' 'bmp-docklet' 'bmp-mac')
replaces=('bmp' 'bmp-docklet' 'bmp-mac')
up2date="lynx -dump 'http://audacious-media-player.org/Downloads'|grep -m1 '.tgz'|sed 's/.*ious-\(.*\).t.*/\1/'"
source=(http://static.audacious-media-player.org/release/$pkgname-$pkgver.tgz)
Fconfopts="$Fconfopts --enable-chardet --enable-ipv6 --disable-dependency-tracking"

# optimalization OK
