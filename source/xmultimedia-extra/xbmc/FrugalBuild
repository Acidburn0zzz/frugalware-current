pkgname=xbmc
pkgver=12.3
pkgrel=1
pkgdesc="A software media player and entertainment hub for digital media."
url="http://www.xbmc.org"
depends=('libboost>=1.50.0' 'libxrandr' 'libva' 'avahi' 'libpulse' 'libmicrohttpd>=0.9.34' \
	'sdlimage' 'sdl_mixer' 'jasper' 'yajl' 'libssh>=0.6.3' 'libmysqlclient' \
	'lzo' 'glew>=1.9.0' 'fontconfig' 'fribidi' 'libcdio' 'libsamplerate' \
	'libass' 'mpeg2dec' 'libmad' 'libmodplug' 'curl' 'libbluray' \
	'rtmpdump' 'libvdpau' 'libcrystalhd' 'bluez' 'tinyxml' 'taglib>=1.8' \
	'lame')
makedepends=('boost>=1.50.0' 'mysql' 'cmake' 'gperf' 'zip' 'nasm' 'yasm' 'git' 'swig' 'openjdk' 'doxygen')
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://www.xbmc.org/download"
source=(http://mirrors.xbmc.org/releases/source/$pkgname-$pkgver.tar.gz frugalware.patch)
sha1sums=('adb517e2f407fceb1549fc4438723f222a8ff212' \
          '2f36eb89e7744d7471710ccc5cb7dd7f4cf73c17')

build()
{
	Fcd $pkgname-$pkgver-Frodo
	./bootstrap || Fdie
	Fbuild \
		--disable-debug \
		--enable-neon \
		--enable-optimizations \
		--enable-gl \
		--disable-gles \
		--enable-sdl \
		--enable-vdpau \
		--enable-vaapi \
		--enable-crystalhd \
		--disable-vdadecoder \
		--disable-vtbdecoder \
		--disable-openmax \
		--disable-tegra \
		--disable-profiling \
		--enable-joystick \
		--enable-xrandr \
		--disable-goom \
		--disable-rsxs \
		--disable-projectm \
		--enable-x11 \
		--disable-ccache \
		--enable-pulse \
		--enable-rtmp \
		--disable-samba \
		--disable-nfs \
		--disable-afpclient \
		--disable-airplay \
		--disable-airtunes \
		--enable-ffmpeg-libvorbis \
		--enable-dvdcss \
		--disable-mid \
		--disable-hal \
		--enable-avahi \
		--enable-non-free \
		--disable-asap-codec \
		--enable-webserver \
		--enable-optical-drive \
		--enable-libbluray \
		--enable-texturepacker \
		--enable-udev \
		--disable-libusb \
		--disable-libcec \
		--enable-external-libraries \
		--enable-external-ffmpeg
}

# optimization OK
