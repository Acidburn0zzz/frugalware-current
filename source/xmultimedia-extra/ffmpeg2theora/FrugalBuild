# Compiling Time: 0.05 SBU
# Maintainer: Kooda <kooda@upyum.com>

pkgname=ffmpeg2theora
pkgver=0.26
pkgrel=1
pkgdesc="A simple converter to create Ogg Theora files"
url="http://www.v2v.cc/~j/ffmpeg2theora/"
depends=('ffmpeg>=20100416' 'libkate' 'libogg' 'libtheora>=1.1.1')
makedepends=('pkgconfig' 'scons')
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/download.html"
source=(http://www.v2v.cc/~j/$pkgname/downloads/$pkgname-$pkgver.tar.bz2)
sha1sums=('fd4b2e31941a8abb42fe610c19dc5e59af7bf186')

build() {
  Fcd
  scons || Fdie
  scons install destdir="$Fdestdir" prefix="/usr" mandir="PREFIX/share/man" || Fdie
}

