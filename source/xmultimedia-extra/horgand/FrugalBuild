# Compiling Time: 0.10 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=horgand
pkgver=1.14
pkgrel=1
pkgdesc="Horgand is an opensource software organ."
depends=('jack' 'libsndfile' 'alsa-lib' 'alsa-utils' 'fltk2' 'libxpm')
makedepends=('imagemagick')
options=('scriptlet')
Finclude berlios
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
sha1sums=('045b339241e8047aa8f5221fa215789333d6ef47')
_F_desktop_icon=$pkgname

build() {
	Fbuild
	Fmkdir usr/share/pixmaps
	convert src/horgand128.xpm $Fdestdir/usr/share/pixmaps/$pkgname.png || Fdie
	Fdesktop2
}

# optimization OK
