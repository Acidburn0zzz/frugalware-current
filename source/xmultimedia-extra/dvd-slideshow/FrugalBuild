# Compiling Time: ~0 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>
# Contributor: Edo Hikmahtiar <firesand@gmail.com>

pkgname=dvd-slideshow
pkgver=0.7.5
pkgrel=1
pkgdesc="dvd-slideshow makes a DVD slideshow video with menus from a text file listing of pictures, effects, and audio tracks."
url="http://sourceforge.net/projects/dvd-slideshow/"
depends=('imagemagick' 'libdvdread' 'dvdauthor' 'ffmpeg' 'lame')
Finclude sourceforge
license="GPL"
groups=('xmultimedia-extra')
archs=('i686')
sha1sums=('82a33d1e9713cd4204dbd592989bb10946fe07ec')

build () {
	Fmkdir usr/{bin,man/man1}
	Fcpr $pkgname-$pkgver/man/dvd-slideshow.1 /usr/man/man1/
	Fcpr $pkgname-$pkgver/dvd-slideshow /usr/bin/
	Fdoc $pkgname-$pkgver/doc/*
}
