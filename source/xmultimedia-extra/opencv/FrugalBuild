pkgname=opencv
pkgver=3.1.0
pkgrel=5
pkgdesc="Intel(R) Open Source Computer Vision Library"
url="http://opencv.org/"
depends=('jasper' 'gst1-plugins-base' 'openexr>=2.2.0' 'ffmpeg>=2.5.1' \
         'gtk+3' 'xine-lib>=1.2.2' 'libdc1394' 'v4l-utils' \
         'libunicap' 'libgl' 'vtk' 'zlib' 'libjpeg' 'libwebp' 'libpng'
         'libtiff' 'jasper' 'gdal' 'libdc1394' 'libgphoto2' 'eigen' 'libcl' \
         'libsm' 'libxt')
makedepends=('doxygen' 'numpy' 'eigen' 'apache-ant' 'x11-protos')
_F_github_author="Itseez"
_F_github_tag=y
_F_cmake_confopts="   -DCMAKE_BUILD_TYPE=Release \
                      -DCMAKE_INSTALL_PREFIX=/usr \
                      -DCMAKE_SKIP_RPATH=ON \
                      -DWITH_XINE=ON \
                      -DWITH_OPENMP=ON \
                      -DWITH_OPENGL=ON \
                      -DWITH_UNICAP=ON \
                      -DBUILD_EXAMPLES=ON \
                      -DBUILD_TESTS=OFF \
                      -DINSTALL_C_EXAMPLES=ON \
                      -DINSTALL_PYTHON_EXAMPLES=ON \
		      -DOPENCV_EXTRA_MODULES_PATH=../opencv_contrib-$pkgver/modules"
Finclude github  cmake openjava
options=('noccache' 'static')
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
#source=("${source[@]}" "${source[0]/opencv/opencv_contrib}")
#TODO: stupid same filename
source=("${source[@]}" "5852.patch")

