subdepends+=('python numpy')
subrodepends+=("$pkgname>=$pkgver")
subgroups+=('xapps-extra')
subarchs+=('x86_64')

build() {

	Fcd
	## broken .. maybe glvnd changes ?
	## -> libGLU.so: undefined reference to `quicksort(void**, int, int, int (*)(void*, void*))'
	Fexec rm -rf samples/cpp/detect_mser.cpp || Fdie
	CMake_build

	## 32MB++
	Fsplit $pkgname-samples usr/share/OpenCV/samples

	Fsplit $pkgname-python2 usr/lib/python2.*/
	Fsplit $pkgname-python3 usr/lib/python3.*/

}
# optimization OK
