# Compiling Time: 2.57 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=hydrogen
pkgver=0.9.4.1
pkgrel=3
pkgdesc="Hydrogen is an advanced drum machine."
depends=('liblrdf>=0.4.0-3' 'openssl' 'libstdc++' 'jack>=0.118.0' 'libqtgui>=4.6.2-3' 'libqtnetwork>=4.6.2-3' 'libqtxml>=4.6.2-3' 'libsndfile' 'libtar' 'libxml2')
makedepends=('qt4-linguist' 'scons' 'subversion')
_F_kde_defaults=0
Finclude sourceforge kde
url="http://www.hydrogen-music.org/"
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
sha1sums=('22ec492737347e89d38c4629d5df54e0e85d2e14')

build()
{
	Fcd $pkgver
	QTDIR=/usr scons prefix='/usr' || Fdie
	QTDIR=/usr scons install DESTDIR=$Fdestdir prefix='/usr' || Fdie
}
