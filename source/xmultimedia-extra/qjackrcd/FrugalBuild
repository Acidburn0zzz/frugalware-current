# Compiling Time: 0.01 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=qjackrcd
pkgver=1.0.2
pkgrel=1
pkgdesc="A simple QT/Jack recorder"
depends=('libqtgui' 'libsndfile' 'jack')
makedepends=('qt4-linguist' 'libqtdesigner')
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
_F_sourceforge_sep="-src-"
Finclude sourceforge
_F_cd_path="$pkgname-$pkgver"
sha1sums=('e99c935cc693fa9e98bdb29093720696f977af82')

_F_desktop_name="QJackRcd"
_F_desktop_icon="/usr/share/pixmaps/qjackrcd.png"
_F_desktop_categories="AudioVideo"

build() {
	Fcd
	qmake || Fdie
	make || Fdie
	Fexerel $pkgname /usr/bin/$pkgname
	mv record-red.png $pkgname.png
	Ficonrel $pkgname.png
	Fdesktop2
}

# optimization OK
