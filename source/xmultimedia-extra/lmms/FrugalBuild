# Compiling Time: 0.96 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=lmms
pkgver=0.3.1
pkgrel=1
pkgdesc="Linux MultiMedia Studio."
depends=('sdl_sound' 'jack' 'libsamplerate' 'qt')
makedepends=('ladspa_sdk')
options=('scriptlet')
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
source=($source fix-transaltion-detection.patch)
sha1sums=('e0418ea00367e4382721725021f3dceca7c8bb6b' \
          '8cc26dcf2ba498a5902e6b9b7a7dcd78d98ed55b')

build()
{
	Fcd
	mkdir m4 || Fdie
	Fpatchall
	Fautoreconf
	Fmake \
		--with-linux \
		--without-singerbot \
		--without-vst \
		--enable-hqsinc		
	Fmakeinstall
}

# optimization OK
