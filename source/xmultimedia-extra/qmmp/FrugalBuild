pkgname=qmmp
pkgver=1.1.5
pkgrel=2
pkgdesc="A music player written in Qt that supports Winamp skins."
url="http://qmmp.ylsoftware.com"
depends=('qt5-base>=5.7.0-4' 'qt5-x11extras>=5.7.0-3' 'libuuid' 'libsamplerate' \
        'ffmpeg>=3.2' 'taglib' 'libmpcdec' 'libmad' 'qt5-multimedia>=5.7.0-3' \
	'libcdio-paranoia' 'wavpack' 'libmms' 'curl' 'libpulse>=9.0-4')
makedepends=('qt5-tools>=5.7.0-3' 'x11-protos')
groups=('xmultimedia-extra')
archs=('x86_64')
_F_gnome_iconcache="y"
_F_archive_grepv="svn"
Finclude cmake gnome-scriptlet
up2date="Flasttar $url/files/"
source=($url/files/$pkgname-$pkgver.tar.bz2)
sha1sums=('461b15590f8d3f33c5eb6b28d0ba90fc0bb8ec38')

build() {
	CMake_build
	Fbuild_gnome_scriptlet
}

# optimization OK
