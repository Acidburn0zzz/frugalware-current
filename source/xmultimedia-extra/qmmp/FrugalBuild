pkgname=qmmp
pkgver=0.5.1
pkgrel=1
pkgdesc="A music player written in Qt that supports Winamp skins."
url="http://qmmp.ylsoftware.com/"
depends=('libqtgui' 'libqtnetwork' 'libuuid' 'libsamplerate' 'libqtdbus' 'ffmpeg' 'taglib' 'libmpcdec' 'libmad' 'libcdio' 'wavpack' 'libmms' 'curl')
makedepends=('qt4-linguist' 'libqt3support')
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
_F_googlecode_ext=".tar.bz2"
_F_gnome_iconcache="y"
Finclude cmake googlecode gnome-scriptlet
sha1sums=('a1e1b7b69aa4bd051c1783aea3c52bed61cd27e6')

build() {
	CMake_build
	Fbuild_gnome_scriptlet
}

