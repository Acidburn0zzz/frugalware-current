# Compiling Time: 3.01 SBU
# Maintainer: DNAku <DNAku@frugalware.org>
# Contributor: Tuxbubling <tuxbubling@tiscali.fr>

pkgname=ardour
pkgver=0.99.3
pkgrel=2
pkgdesc="Ardour is a digital audio workstation."
url="http://ardour.org/"
depends=('liblrdf' 'flac' 'libsamplerate' 'libx11' 'curl>=7.16' 'libstdc++' 'libart_lgpl' 'jack' 'libxcb' 'libgcc' 'gtk+')
makedepends=('scons')
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://ardour.org/download | grep -o 'ardour-[0-9a-z\.]\+\.tar\.bz2' | sed -ne 's/.*-//;s/\.tar.*$//;1 p'"
source=(http://ardour.org/files/releases/$pkgname-$pkgver.tar.bz2)
sha1sums=('2a5fa961ff03a0691c17b9e5a51a3dacc2888d1f')

build()
{
	Fcd
	if [ "$CARCH" == "x86_64" ]; then
		export CFLAGS="$CFLAGS -fPIC -fno-strict-aliasing"
	else
		export CFLAGS="$CFLAGS -fno-strict-aliasing"
	fi
	Fsed "\"-O3\"" "\"\"" SConstruct
	scons PREFIX=/usr ARCH="$CFLAGS"
	scons DESTDIR=$Fdestdir/ install
}

# optimization OK
