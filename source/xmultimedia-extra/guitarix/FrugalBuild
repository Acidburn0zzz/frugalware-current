# Compiling Time: 0.49 SBU
# Maintainer: exceed <exceed.cedric@gmail.com>

pkgname=guitarix
pkgver=0.09.0
pkgrel=1
pkgdesc="A simple Linux Rock Guitar Amplifier for jack"
archs=('i686')
url="http://guitarix.sourceforge.net/"
groups=('xmultimedia-extra')
depends=('ladspa_sdk' 'gtk+2' 'jack>=0.118.0' 'libsndfile' 'libsigc++2' 'zita-convolver')
_F_sourceforge_ext=-nopkg.tar.bz2
Finclude sourceforge
sha1sums=('2e1ff131c687777b3abb52078c9079ad037ca406')

build()
{
	Fcd
	./waf configure --prefix=/usr || Fdie
	./waf build || Fdie
	./waf --destdir=$Fdestdir install || Fdie
}

