pkgname=qtractor
pkgver=0.8.0
pkgrel=1
pkgdesc="Audio/MIDI multi-track sequencer written in C++ with the Qt5 framework"
depends=('qt5-base' 'qt5-x11extras' 'jack' 'libsndfile' 'libmad' 'rubberband' 'liblo')
makedepends=('qt5-tools' 'ladspa_sdk')
_F_gnome_iconcache="y"
Finclude sourceforge gnome-scriptlet
archs=('x86_64')
groups=('xmultimedia-extra')
sha1sums=('9d7a6cc02079b81876b4bdbddaa19f0c05e7e333')

replaces=('audacity')
conflicts=("${replaces[@]}")

build()
{
	Fcd
	Fsed "@ac_qmake@" "/usr/bin/qmake-qt5" Makefile.in
	Fbuild
	Fbuild_gnome_scriptlet
}

# optimization OK
