pkgname=qtractor
pkgver=0.8.4
pkgrel=2
pkgdesc="Audio/MIDI multi-track sequencer written in C++ with the Qt5 framework"
depends=('qt5-base>=5.9.2' 'qt5-x11extras>=5.9.2' 'jack' 'libsndfile' 'libmad' 'rubberband' 'liblo')
makedepends=('qt5-tools>=5.9.2' 'ladspa_sdk')
_F_gnome_iconcache="y"
Finclude sourceforge gnome-scriptlet
archs=('x86_64')
groups=('xmultimedia-extra')
sha1sums=('673be7928e0d50041314978ccc13e4d2c388d072')

replaces=('audacity')
conflicts=("${replaces[@]}")

build()
{
	Fcd
	Fsed "@ac_qmake@" "/usr/bin/qmake-qt5" Makefile.in
	Fbuild
	Fbuild_gnome_scriptlet
}

# optimization OK
