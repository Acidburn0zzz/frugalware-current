# Compiling Time: 0.06 SBU
# Maintainer: Pingax <pingax@frugalware.fr>

pkgname=beatbox
pkgver=0.1
pkgrel=1
pkgdesc="Audio player written in vala"
url="https://launchpad.net/beat-box/"
archs=('i686')
groups=('xmultimedia-extra')
depends=('sqlheavy' 'gtk+2' 'libgee' 'gstreamer' 'taglib' 'gconf' 'libnotify'\
    'unique1' 'libsoup' 'json-glib')
up2date="Flasttar http://ftp.frugalware.org/pub/other/people/pingax/snapshots/"
source="http://ftp.frugalware.org/pub/other/people/pingax/snapshots/$pkgname-$pkgver.tar.gz"
_F_cd_path=recipe-$pkgver
_F_gnome_iconcache="y"
options=("scriptlet")
sha1sums=('c8cbeeee05d82c817bb20ab1b1acada22dfbd75e')

build() {
    Fcd
    ./waf configure --prefix=/usr -p || Fdie
    ./waf build || Fdie
    ./waf install --destdir=$Fdestdir
}
