# Compiling Time: 0.01 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=tv-maxe
pkgver=0.06.4
pkgrel=1
pkgdesc="Free television for your Linux system"
depends=('pygtk' 'sopcast' 'vlc' 'mplayer')
groups=('xmultimedia-extra')
archs=('i686')
Finclude googlecode
sha1sums=('3390900bec826292df9935c1c6fd6705724aa674')

_F_desktop_name="TV-MAXE"
_F_desktop_icon="/usr/share/pixmaps/tvmaxe.png"
_F_desktop_categories="AudioVideo"

build() {
	Fcd
	Fmkdir /usr/share/$pkgname
	cp -R * $Fdestdir/usr/share/$pkgname || Fdie
	Fwrapper "cd /usr/share/tv-maxe/ && python tvmaxe.py" tv-maxe
	Fcd
	Ficonrel tvmaxe.png
	Fdesktop2
}
