pkgname=cpio
pkgver=2.5
pkgrel=4
pkgdesc="A program to manage archives of files"
url="http://www.gnu.org/software/cpio"
depends=('bash')
up2date=`lynx -dump 'http://ftp.gnu.org/pub/gnu/cpio/?M=D' |grep tar.gz|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 4|sed 's/.tar.gz//'|cut -d - -f 2`
source=(ftp://ftp.gnu.org/pub/gnu/cpio/cpio-$pkgver.tar.gz)
md5sums=('e02859af1bbbbd73fcbf757acb57e0a4')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/
  make || return 1
  make prefix=$startdir/pkg install
  mkdir $startdir/pkg/usr
  mv $startdir/pkg/man $startdir/pkg/usr
  rm -rf $startdir/pkg/libexec
  rm -rf $startdir/pkg/info
}
