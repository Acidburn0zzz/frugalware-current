# Compiling Time: 0.06 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=cpio
pkgver=2.6
pkgrel=4
pkgdesc="A program to manage archives of files"
url="http://www.gnu.org/software/cpio"
depends=('bash')
groups=('base')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump 'http://ftp.gnu.org/pub/gnu/cpio/?M=D'|grep tar.bz2$|sed -n 's/.*o-\(.*\)\.t.*/\1/;1 p'"
source=(http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('4f65821ec10eb2c330a582fbc8112960c9849ecd')

build()
{
	Fbuild || return 1
	Frm /usr/libexec/rmt /usr/info/dir
}

# optimization ok
