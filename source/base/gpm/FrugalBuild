# Last Modified: Thu, 21 Jul 2005 11:17:49 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=gpm
pkgver=1.20.1
pkgrel=8
pkgdesc="General purpose mouse server"
depends=('ncurses')
groups=('base' 'chroot-core')
archs=('i686' 'x86_64')
backup=(etc/sysconfig/gpm)
install=$pkgname.install
up2date="lynx -dump 'http://arcana.linux.it/pub/gpm/?M=D' |grep tar.gz$|sed -n 's/.*m-\(.*\)\.t.*/\1/;1 p'"
source=(http://arcana.linux.it/pub/$pkgname/$pkgname-$pkgver.tar.gz \
        rc.gpm mouseconfig gpm 01-mc-segfaults.patch gpm-1.20.1-ceilf-gcc4.patch)
md5sums=('632a8fa8a6613027e407ee3e7a54cf13' '178385edf3e0f5aa95a3d7d596204a3f' \
         'f866e51e40501e1ff3ea3c5b41b82101' '7f2ef1ec0cdef45d0e4a451a6eb69e38' \
	 '61be55c29d7a869a1b3b7c93a20b4baa' '4bf0293d0fed371d411b0759f63a5cc2')

build()
{
	Fbuild --sysconfdir=/etc || return 1
	Frcd
	Fexe /var/lib/frugalware/system/mouseconfig
	Ffile ../messages/mouseconfig.* /var/lib/frugalware/messages/
	Fmkdir /sbin
	Fln ../var/lib/frugalware/system/mouseconfig /sbin/mouseconfig
	Ffile /etc/sysconfig/gpm
}

# vim: ft=sh

# optimalization OK
