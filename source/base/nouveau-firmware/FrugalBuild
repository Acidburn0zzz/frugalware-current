# Compiling Time: 0.01 SBU
# Maintainer: Michel Hermier <hermier@frugalware.org>

pkgname=nouveau-firmware
pkgver=20091212
pkgrel=1
pkgdesc="Firmwares for nouveau driver (nVidia GPU)."
depends=()
groups=('base')
archs=('i686' 'x86_64' 'ppc')
url=("http://nouveau.freedesktop.org/")
dlurl="http://people.freedesktop.org/~pq/nouveau-drm/"
up2date="Flasttar $dlurl"

source=("$dlurl/$pkgname-$pkgver.tar.gz")
sha1sums=('26ff5135a47fdac8b16ce4e69e83c4ba4459ca30')

Fbuild()
{
	Fmkdir /lib/firmware
	Fcp nouveau /lib/firmware
}

