pkgname=sed
pkgver=4.1.2
pkgrel=1
pkgdesc="GNU version of sed, a stream editor"
url="http://www.gnu.org/software/sed"
depends=('glibc')
up2date=`lynx -dump 'http://ftp.gnu.org/pub/gnu/sed/?M=D'|grep -v sig|grep tar.gz|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 4|sed  's/.tar.gz//'|cut -d - -f 2`
source=(http://ftp.gnu.org/pub/gnu/sed/$pkgname-$pkgver.tar.gz)
md5sums=('928f0e06422f414091917401f1a834d0')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
}
