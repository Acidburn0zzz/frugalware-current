pkgname=sed
pkgver=4.4
pkgrel=1
pkgdesc="GNU version of sed, a stream editor"
url="http://www.gnu.org/software/sed"
depends=('glibc>=2.24-4')
groups=('base' 'core')
archs=('x86_64')
Fup2gnugz
source=(http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.xz)
sha1sums=('a196cd036efd52a8e349cfe88ab4baa555fb29d5')

build()
{
	Fbuild
	Fln ../usr/bin/sed /bin/sed
}

# optimization OK
