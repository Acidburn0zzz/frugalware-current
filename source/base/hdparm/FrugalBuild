pkgname=hdparm
pkgver=5.7
pkgrel=1
pkgdesc="Read/set hard drive parameters"
depends=('glibc')
up2date=`lynx -dump 'http://www.ibiblio.org/pub/Linux/system/hardware/?M=D'|grep hdparm|grep tar.gz|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 4|sed 's/.tar.gz//'|cut -d - -f 2`
source=(http://www.ibiblio.org/pub/Linux/system/hardware/$pkgname-$pkgver.tar.gz)
md5sums=('1bfb16ac78ca4af8b3e4e3b9fab28743')

build() {
	cd $startdir/src/$pkgname-$pkgver
	
	make || return 1
	
	mkdir -p $startdir/pkg/{usr,sbin,usr/man/man8}
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh

