pkgname=hdparm
pkgver=5.9
pkgrel=1
pkgdesc="Read/set hard drive parameters"
url="http://www.ibiblio.org/pub/Linux/system/hardware/"
depends=('glibc')
groups=('base')
up2date=`lynx -dump 'http://www.ibiblio.org/pub/Linux/system/hardware/?M=D'|grep hdparm.*tar.gz$|sed -n 's/.*m-\(.*\)\.t.*/\1/;1 p'`
source=($url/$pkgname-$pkgver.tar.gz)
md5sums=('a270a01158981a8470d76b96f84e249a')

build()
{
	Fmkdir /usr /sbin /usr/man/man8
	Fbuild || return 1
}

