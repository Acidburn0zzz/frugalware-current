# Last Modified: Sat, 07 May 2005 22:57:25 +0200
# Compiling Time: ~5 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=xfsprogs
pkgver=2.5.6
pkgrel=2
pkgdesc="XFS filesystem-specific static libraries and headers."
url="http://oss.sgi.com/projects/xfs/"
depends=('glibc')
makedepends=('xfsprogs-attr')
groups=('base')
archs=('i686' 'x86_64')
replaces=('xfsprogs-base')
up2date="wget --passive-ftp -O - -q ftp://oss.sgi.com/projects/xfs/latest/cmd_tars/MD5SUMS|grep $pkgname|cut -d ' ' -f 3|sed 's/.src.tar.gz//'|cut -d - -f 2"
source=(ftp://oss.sgi.com/projects/xfs/latest/cmd_tars/$pkgname-$pkgver.src.tar.gz \
        $pkgname-$pkgver-lai.diff $pkgname-$pkgver-defs.diff)
md5sums=('047ec75d3601a8dcf3d159da108be1ef' '81cbd3c92a894b364708de767a48fa43' \
         '8c8365f6585e9abb18a166f7c7a933a7')

build()
{
	Fpatchall
	Fmake --enable-shared=no || return 1
	Fmakeinstall install-dev || return 1
	Fmv /usr/sbin /
	Fmv /usr/libexec /usr/lib
}

# optimalization ok

