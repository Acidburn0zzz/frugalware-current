# chkconfig: 2345 44 56
# description: Listen and dispatch ACPI events from the kernel

source /lib/initscripts/functions
TEXTDOMAIN=acpid

actions=(restart start status stop)
daemon=$"ACPI daemon"

pid="$(pidof acpid 2> /dev/null)"

rc_start()
{
	start_msg
	if [ -d /proc/acpi ] && [[ "${pid}" == "" ]] ; then
		/usr/sbin/acpid
		ok $?
	else
		ok 999
	fi
}

rc_stop()
{
	stop_msg
	if [ -d /proc/acpi ] && [[ "${pid}" != "" ]] ; then
		killall acpid
		ok $?
	else
		ok 999
	fi
}

rc_exec $1

