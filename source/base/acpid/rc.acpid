. /etc/rc.d/rc.functions

# chkconfig: 2345 44 56
# description: Listen and dispatch ACPI events from the kernel

[ -d /proc/acpi ] || exit 1

if [ "$1" = "stop" ]; then
	stop "$stopacpi"
	killall acpid
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startacpi"
	/usr/sbin/acpid
	ok $?
fi
