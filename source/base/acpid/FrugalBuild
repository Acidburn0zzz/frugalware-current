pkgname=acpid
pkgver=1.0.4
pkgrel=1
pkgdesc="Utilities for using ACPI power management"
url="http://acpid.sourceforge.net"
depends=('glibc')
up2date=`lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=33140' |grep acpid- |sed -ne 's/.*d-\(.*\)\.t.*/\1/;1 p'`
source=(http://unc.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz \
        rc.acpid acpi_handler.sh default)
md5sums=('3aff94e92186e99ed5fd6dcee2db7c74' '1a70307ac303e6ca5868d36afd5a4be0' \
         '5b75ac83f4be996d9669609028490eab' '107052da02d51d3959fc3d1ad502a200')

build() {
	cd $startdir/src/$pkgname-$pkgver
	
	make || return 1
	
	make INSTPREFIX=$startdir/pkg MAN8DIR=$startdir/pkg/usr/man/man8 install
	rm -rf $startdir/pkg/usr/bin
	install -D -m 0755 $startdir/src/acpi_handler.sh \
		$startdir/pkg/etc/acpi/acpi_handler.sh
	install -D $startdir/src/default $startdir/pkg/etc/acpi/events/default
	# init scripts
	mkdir -p $startdir/pkg/etc/rc.d/rc.messages
	install -m755 $startdir/rc.$pkgname $startdir/pkg/etc/rc.d/rc.$pkgname
	install -m644 $startdir/messages/$pkgname.* \
		$startdir/pkg/etc/rc.d/rc.messages/
}

# vim: ft=sh
