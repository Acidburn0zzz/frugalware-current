pkgname=fdutils
pkgver=5.4
pkgrel=1
pkgdesc="Utilities for formatting floppies and configuring the floppy drive."
url="http://fdutils.linux.lu/"
depends=('bash' 'glibc')
up2date=`lynx -dump 'http://fdutils.linux.lu/?power-to-the-people'|grep -1 available|sed -n '3 p'|tr -s ' '|sed 's/.tar.gz//'|cut -d - -f 2`
source=(http://fdutils.linux.lu/$pkgname-$pkgver.tar.gz)
md5sums=('17c1df04b1e524078ee52825a5ef5e56')

build() {

# this package won't build against flex 2.5.31
# please use the 2.5.4a release

  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1
  
  mkdir -p $startdir/pkg/usr/bin
  mkdir -p $startdir/pkg/usr/man/man1
  mkdir -p $startdir/pkg/usr/man/man4
  mkdir -p $startdir/pkg/usr/info
  make prefix=$startdir/pkg/usr install
}
