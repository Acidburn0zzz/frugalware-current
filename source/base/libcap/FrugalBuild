# Compiling Time: ~0.1 SBU
# Contributor: Laszlo Dvornik <dvornik@gnome.hu>
# Contributor: crazy <crazy@frugalware.org>
# Maintainer: DeX77 <dex77@frugalware.org>


pkgname=libcap
pkgver=2.24
pkgrel=4
pkgdesc="POSIX 1003.1e capabilities"
url="https://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2"
groups=('base' 'core')
archs=('i686' 'x86_64' 'arm')
depends=('glibc>=2.22-7' 'xfsprogs-attr>=2.2.52-4')
makedepends=('ca-certificates')
up2date="Flasttar ${url}"
source=($url/$pkgname-$pkgver.tar.xz)
sha1sums=('b2754cddb614567de445ffdaac7a00b9671b858a')

build() {

	Fsed '-O2' "${CFLAGS}" Make.Rules
	Fexec sed -i -e "/^lib=/s:=.*:=/usr/lib:" Make.Rules || Fdie

	Fmakeinstall RAISE_SETFCAP=no install

	Fdocrel pam_cap/capability.conf
	Frm usr/lib/*.a
}

# optimization OK
