post_install()
{
	cd /etc/rc.d/rcS.d
	ln -sf ../rc.udev S00rc.udev
	chkconfig --add rc.hotplug
}

post_upgrade()
{
	# force once the usage of hotplug
	if [ `vercmp $2 079` -lt 0 ] ; then
		chkconfig --add rc.hotplug
	fi
}

pre_remove()
{
	rm /etc/rc.d/rcS.d/S00rc.udev
	chkconfig --del rc.hotplug
}

op=$1
shift

$op $*

