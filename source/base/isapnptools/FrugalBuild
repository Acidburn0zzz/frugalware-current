pkgname=isapnptools
pkgver=1.26
pkgrel=1
pkgdesc="allow ISA Plug-And-Play devices to be configured on a Linux machine"
url="http://www.roestock.demon.co.uk/isapnptools/"
depends=('glibc')
up2date=`lynx -dump http://www.roestock.demon.co.uk/isapnptools/|grep 'latest released version'|tr -s ' '|sed 's/,//'|cut -d ' ' -f 7`
source=(ftp://ftp.demon.co.uk/pub/unix/linux/utils/isapnptools-$pkgver.tgz)
md5sums=('26def2016548edeafe383113f0bc8ac6')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
