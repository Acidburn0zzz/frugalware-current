pkgname=texinfo
pkgver=4.11
pkgrel=2
pkgdesc="The GNU info program and utilities"
url="http://www.gnu.org/software/texinfo/"
depends=('ncurses>=5.6-3' 'net-tools>=1.60-25' 'grep>=2.5.3-3' 'sed>=4.1.5-2' 'udev>=118-7' 'gawk>=3.1.6-2')
rodepends=('shadow>=4.1.0-4')
makedepends=('bison>=2.3-2')
groups=('base' 'chroot-core')
archs=('i686' 'x86_64')
options=('force')
Fup2gnubz2
source=(http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.bz2 mkinfodir)
sha1sums=('915a42e1278860b0fa64e4ef9d5ad4488d3b23a0' \
          'd744345f082e32af0675a0b9d3287c6b8d4600a7')


build()
{
	Fbuild
	Fexe /usr/bin/mkinfodir
}

# optimization ok
