# Compiling Time: 0.36 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=bash
pkgver=3.1
pkgrel=4
pkgdesc="The GNU Bourne Again shell"
url="http://cnswww.cns.cwru.edu/~chet/bash/bashtop.html"
backup=(etc/{profile,shells})
depends=('glibc' 'readline')
groups=('base' 'core')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump $url|grep current|sed -n -e 's/.*bash-\(.*\)\. .*$/\1/' -e '1 p'"
source=(ftp://ftp.cwru.edu/pub/$pkgname/$pkgname-$pkgver.tar.gz profile shells)
sha1sums=('766e3fd9384616d8a103f812f662fd8ec791c129' \
	  '8e2f8f0d3c561c1a10e1ab22dda02feaec7874f9' \
	  '3becc7c8c42e8dd0e04ebc4b50f131bd5081ec53')

build()
{
	Fbuild --with-curses --enable-readline
	Fmv /usr/bin /
	Ffile profile shells /etc/
	Fln bash /bin/sh
}

# optimalization OK
