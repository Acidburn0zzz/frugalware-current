# Last Modified: Wed, 16 Mar 2005 18:01:34 +0100
# Compiling Time: ~3 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=bash
pkgver=3.0
pkgrel=6
pkgdesc="The GNU Bourne Again shell"
url="http://cnswww.cns.cwru.edu/~chet/bash/bashtop.html"
backup=(etc/{profile,shells})
depends=('glibc' 'readline')
groups=('base')
up2date="lynx -dump $url|grep current|sed -n -e 's/.*bash-\(.*\)\.$/\1/' -e '1 p'"
source=(ftp://ftp.cwru.edu/pub/$pkgname/$pkgname-$pkgver.tar.gz profile shells)
md5sums=('26c4d642e29b3533d8d754995bc277b3' \
	 'a21734ba6597abdfa89655cba0455948' 'da19d7887faad35385c2cc5672e294ea')

build()
{
	Fbuild --with-curses --enable-readline || return 1
	Fmv /usr/bin /
	Ffile profile shells /etc/
	Fln bash /bin/sh
	Frm /usr/info/dir
}

# vim: ft=sh
