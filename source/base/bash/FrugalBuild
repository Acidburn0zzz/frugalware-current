pkgname=bash
pkgver=3.0
pkgrel=3
pkgdesc="The GNU Bourne Again shell"
url="http://cnswww.cns.cwru.edu/~chet/bash/bashtop.html"
backup=(etc/{profile,shells})
depends=('glibc' 'readline')
up2date=`lynx -dump $url|grep current|sed -n -e 's/.*bash-\(.*\)\.$/\1/' -e '1 p'`
source=(ftp://ftp.cwru.edu/pub/$pkgname/$pkgname-$pkgver.tar.gz profile shells)
md5sums=('26c4d642e29b3533d8d754995bc277b3' \
	 '3b506ad32b29b762f2fa9f999af95d50' 'da19d7887faad35385c2cc5672e294ea')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --with-curses --enable-readline

	make || return 1

	make prefix=$startdir/pkg/usr install
	mv $startdir/pkg/usr/bin $startdir/pkg/bin
	mkdir -p $startdir/pkg/etc
	install -m644 $startdir/src/{profile,shells} $startdir/pkg/etc/
	cd $startdir/pkg/bin && ln -sf $pkgname sh
}

# vim: ft=sh
