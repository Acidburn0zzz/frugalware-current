# Last Modified: Sat, 07 May 2005 18:26:00 +0200
# Compiling Time: ~3 minutes
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=vim
pkgver=6.3
pkgrel=2
pkgdesc="VIM - Vi IMproved console"
url="http://www.vim.org"
depends=('ncurses')
groups=('base')
archs=('i686' 'x86_64')
backup=(usr/share/vim/vimrc)
up2date="wget -q -O - --passive-ftp ftp://ftp.vim.org/pub/editors/vim/unix/.message|grep tar.gz|tr -s ' '|sed -n '1 p'|cut -d ' ' -f 2|cut -d - -f 2"
source=(ftp://ftp.vim.org/pub/vim/unix/$pkgname-$pkgver.tar.bz2 \
        vim-$pkgver-vimrc.diff)
md5sums=('821fda8f14d674346b87e3ef9cb96389' 'ac49851c9adf65c40eb6274b3b7ab90b')

build()
{
	Fcd vim`echo $pkgver|sed 's/\.//'`
	Fpatchall
	cd src
	Fmake --localstatedir=/var/lib/$pkgname --disable-gpm --with-x=no \
		--enable-gui=no || return 1
	make DESTDIR=$Fdestdir VIMRTDIR= install
	Fln vim /usr/bin/vi
	Fcp /usr/share/vim/vimrc_example.vim /usr/share/vim/vimrc
}

# optimalization ok

# vim: ft=sh
