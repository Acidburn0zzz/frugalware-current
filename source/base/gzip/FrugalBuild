# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=gzip
pkgver=1.2.4a
pkgrel=3
pkgdesc="A file compression utility"
url="http://www.gzip.org"
depends=('glibc' 'bash')
groups=('base')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://ftp.gnu.org/pub/gnu/gzip/?M=D'|grep tar.gz$|sed -n 's/.*p-\(.*\)\.t.*/\1/;1 p'"
source=(http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('39053e044b18ecd0627f80fbe7cfeaad')

build()
{
	Fmkdir /bin /usr/bin
	Fbuild || return 1
	Fmv /usr/bin/gzip /bin/
	Frm /usr/bin/{gunzip,zcat}
	Fln gzip /bin/gunzip
	Fln gzip /bin/zcat
}

# vim: ft=sh
