# Compiling Time: 0.01 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>
# Contributor: Rob Kennedy <frugalware@gmail.com>

pkgname=gzip
pkgver=1.3.13
pkgrel=2
pkgdesc="A file compression utility"
url="http://www.gzip.org"
depends=('bash>=3.2_039-3')
replaces=('gzip-devel')
groups=('base' 'chroot-core')
archs=('i686' 'x86_64' 'ppc')
Fup2gnugz
source=(ftp://ftp.gnu.org/pub/gnu/gzip/gzip-$pkgver.tar.gz CVE-2010-0001.patch)
signatures=($source.sig '')

build()
{
	Fbuild
	make check || Fdie
	Fmkdir /bin
	for i in gunzip gzip uncompress zcat
	do
		Fmv /usr/bin/$i /bin
	done
	Fln gzip /bin/compress
}

# optimization OK
