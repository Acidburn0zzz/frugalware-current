# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=multipath-tools
pkgver=0.6.2
pkgrel=2
pkgdesc="Device mapper target autoconfig"
url="http://christophe.varoqui.free.fr"
depends=('lvm2>=2.02.138-5' 'libaio>=0.3.110-4' 'liburcu>=0.9.2-2')
groups=('base')
archs=('x86_64')
up2date="Flasttar $url"
_F_systemd_units=(multipathd=)
_F_scm_type=git
_F_scm_tag="$pkgver"
_F_scm_url="http://git.opensvc.com/multipath-tools/.git"
Finclude systemd scm
backup=(etc/multipath.conf)
_F_make_opts="SYSTEMDPATH=lib/"

build() {
	Funpack_scm
	Fsed 'lib64' 'lib' Makefile.inc
	Fbuild
}

# optimization OK
