pkgname=module-init-tools
pkgver=3.0
pkgrel=2
pkgdesc="Utilities for inserting and removing modules from the Linux kernel"
url="http://www.kernel.org"
depends=('glibc')
backup=('etc/modprobe.conf')
install=$pkgname.install
up2date=`lynx -dump 'http://www.kernel.org/pub/linux/utils/kernel/module-init-tools/?C=M&O=D' |grep module-init-tools |grep -v testsuite |grep -v pre |grep tar.gz |grep -v sign |sed -n '1 p'|tr -s ' '|cut -d ' ' -f 4|sed 's/.tar.gz//'|cut -d - -f 4`
source=(http://www.kernel.org/pub/linux/utils/kernel/module-init-tools/module-init-tools-$pkgver.tar.bz2)
md5sums=('f8bfc480c4168978eca7037cd341da07')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --exec-prefix=/

	make || return 1

	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/etc/rc.d/rc.messages
	install -m755 $startdir/rc.modules $startdir/pkg/etc/rc.d/rc.modules
	install -m644 $startdir/messages/modules.* \
		$startdir/pkg/etc/rc.d/rc.messages/
}
