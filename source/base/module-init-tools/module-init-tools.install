# arg 1:  the new package version
post_install() {
  cd /etc/rc.d/rcS.d
  ln -sf ../rc.modules S20rc.modules
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  /bin/true
}

# arg 1:  the old package version
pre_remove() {
  /bin/true
}

# arg 1:  the old package version
post_remove() {
  rm /etc/rc.d/rcS.d/S20rc.modules
}

op=$1
shift
$op $*
