. /etc/rc.d/rc.functions

# chkconfig: 1 00 96
# description: Goes to single-user mode

start "$sendterm"
killall5 -15
ok $?

start "$sendkill"
sleep 5
killall5 -9
ok $?

if [ "$1" = "start" ]; then
	init -t1 1
fi
