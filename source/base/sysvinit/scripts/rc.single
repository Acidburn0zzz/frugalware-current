. /etc/rc.d/rc.functions

# chkconfig: 1 00 50
# description: Goes to single-user mode

if [ "$1" = "start" ]; then
	start "$sendterm"
	killall5 -15
	ok $?
	
	start "$sendkill"
	sleep 5
	killall5 -9
	ok $?
	init -t1 S
fi
