. /etc/rc.d/rc.functions

# chkconfig: 06 99 50
# description: Halt or reboot the system

if [ "$1" = "start" ]; then
		if [ "$2" = "0" ]; then
			poweroff
		else
			start "$reboot"
			reboot
			ok $?
		fi
fi
