start() {
	echo -ne "\e[01;36m::\e[0m \e[01m$1\e[0m"
}

stop() {
	echo -ne "\e[01;36m::\e[0m \e[01m$1\e[0m"
}

print() {
	# $1: color; $2: message
	echo -ne $'\e['$((`tput cols`-8))$'G\e[01m[\e[01;'${1}m
	echo -n "$2"
	echo -e '\e[0;39m\e[01m]\e[0m'
}

ok() {
	case $1 in
		0)      print 32 "$ok";;
		*)      print 31 "$error";;
	esac
}

. /etc/rc.d/rc.messages/rc.messages
