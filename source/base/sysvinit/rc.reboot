source /lib/initscripts/functions
TEXTDOMAIN=reboot

# chkconfig: 06 99 50
# description: Halt or reboot the system

if [ "$1" = "start" ]; then
	if [ "$2" = "0" ]; then
		poweroff
	else
		msg  $"Rebooting the system"
		reboot
		ok $?
	fi
fi
