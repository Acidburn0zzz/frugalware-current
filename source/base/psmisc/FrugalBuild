# Compiling Time: 0.06 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=psmisc
pkgver=22.4
pkgrel=1
pkgdesc="Miscellaneous procfs tools"
depends=('ncurses')
# Should be removed in next version bump (needed by peekfd fix :S
makedepends=('cvs')
groups=('base')
archs=('i686' 'x86_64' 'ppc')
Finclude sourceforge
# Backport fix from CVS to compile on amd64 too
source=(${source[@]} psmisc-peekfd-fix-x86_64.patch)

build()
{
	Fcd
if [ "$CARCH" == "x86_64" ] ; then
	Fpatchall
	Fautoreconf
fi
	Fmake
	Fmakeinstall
	Frm /usr/{man/man1/pidof.1,bin/pidof}
}

sha1sums=('0826c45e12296943901b865a938a827ce64d9027'\
          '481a946567e56e40839ed3c9440857cab88c746a')
# optimization OK
