pkgname=fbset
pkgver=2.1
pkgrel=1
pkgdesc="Show and modify frame buffer device settings"
url="http://home.tvd.be/cr26864/Linux/fbdev/"
depends=('glibc')
groups=('base')
archs=('i686' 'x86_64')
up2date="$pkgver"
source=(http://home.tvd.be/cr26864/Linux/fbdev/$pkgname-$pkgver.tar.gz)
md5sums=('e547cfcbb8c1a4f2a6b8ba4acb8b7164')

build()
{
	Fmake || return 1
	Fexerel /usr/bin/fbset
	Ffilerel etc/fb.modes.ATI /etc/fb.modes
	Ffilerel /usr/man/man5/fb.modes.5
	Ffilerel /usr/man/man8/fbset.8
}

# optimalization ok
