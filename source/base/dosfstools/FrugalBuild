pkgname=dosfstools
pkgver=2.10
pkgrel=1
pkgdesc="FAT/FAT32/VFAT filesystem checker"
url="http://sparemint.atariforge.net/sparemint/html/packages/dosfstools.html"
depends=('glibc' 'bash')
up2date=`lynx -dump http://sparemint.atariforge.net/sparemint/html/packages/dosfstools.html |grep Version:|tr -s ' ' |cut -d ' ' -f 4`
source=(ftp://ftp.uni-erlangen.de/pub/Linux/LOCAL/dosfstools/$pkgname-$pkgver.src.tar.gz)
md5sums=('59a02f311a891af8787c4c9e28c6b89b')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  cd mkdosfs
  mkdir -p $startdir/pkg/sbin
  cp mkdosfs $startdir/pkg/sbin
  mkdir -p $startdir/pkg/usr/man/man8
  cp mkdosfs.8 $startdir/pkg/usr/man/man8
  cd ../dosfsck
  cp dosfsck $startdir/pkg/sbin
  cp dosfsck.8 $startdir/pkg/usr/man/man8
}
