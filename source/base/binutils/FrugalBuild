pkgname=binutils
pkgver=2.15.92.0.2
pkgrel=1
pkgdesc="A set of programs to assemble and manipulate binary and object files"
url="http://sources.redhat.com/binutils"
depends=('glibc' 'bash')
# old up2date from redhat
# up2date=`lynx -dump http://sources.redhat.com/binutils/ |grep ' latest release of'|tr -s ' '|sed 's/\. / /'|cut -d ' ' -f 9`
up2date=`lynx -dump 'http://www.kernel.org/pub/linux/devel/binutils/?C=M&O=D'|grep tar.bz2|grep -v sign|sed -n '1 p'|tr -s ' ' |cut -d ' ' -f 4|sed 's/.tar.bz2//'|cut -d - -f 2`
source=(http://www.kernel.org/pub/linux/devel/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('702bc82d8b10914e112fb5c5d8b66498')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --enable-shared
	
	make tooldir=$startdir/pkg/usr || return 1
	
	make prefix=$startdir/pkg/usr tooldir=$startdir/pkg/usr install
}

# vim: ft=sh
