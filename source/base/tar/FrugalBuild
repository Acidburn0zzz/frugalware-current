# Compiling Time: 0.30 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=tar
pkgver=1.16
pkgrel=1
pkgdesc="Utility used to store, backup, and transport files"
url="http://www.gnu.org/software/tar/tar.html"
depends=('bash')
groups=('base' 'chroot-core')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump http://ftp.gnu.org/pub/gnu/tar/?M=A |Flasttar"
source=(http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz tar.1 \
	$pkgname-$pkgver-lzma.diff)

build()
{
	Fbuild --bindir=/bin
	Ffile /usr/man/man1/tar.1
}

# optimization ok

sha1sums=('86365d9f24d3faa65244e8fd0108d0a6c6ff9fb7' \
	  '4b1ad46664b97bb83de1dc90877a7e5986872806' \
	  'f3002245c89881177764cc5e54bcafca64ebec2c')
