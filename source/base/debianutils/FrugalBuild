pkgname=debianutils
pkgver=2.10.3
pkgrel=1
pkgdesc="This package provides small utilities which are used by the scripts of Debian packages."
url="http://packages.debian.org/unstable/base/debianutils"
depends=('glibc')
up2date=`lynx -dump http://packages.qa.debian.org/d/debianutils.html |grep 'Last version'|tr -s ' ' |cut -d ' ' -f 4|cut -d - -f 1`
source=(http://http.us.debian.org/debian/pool/main/d/$pkgname/${pkgname}_${pkgver}.tar.gz \
        diskcopy xx)
md5sums=('3f9972a1ae66e26c23c924613d11ce0e' \
	 '26fab629854b89709b0f108f19315691' '5b13ec6841d1346ba6fceedfc4883e8c')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	mkdir -p $startdir/pkg/usr/bin
	cp mktemp tempfile savelog $startdir/pkg/usr/bin/
	chmod 755 $startdir/pkg/usr/bin/savelog
	mkdir -p $startdir/pkg/usr/man/man{1,8}
	cp mktemp.1 tempfile.1 $startdir/pkg/usr/man/man1
	cp savelog.8 $startdir/pkg/usr/man/man8  
  
	# compress
	#cd $startdir/src/compress
	#patch -p0  < $startdir/src/compress.diff
	#make || return 1
	#cp compress $startdir/pkg/usr/bin
	#cp compress.1 $startdir/pkg/usr/man/man1
	#echo '.so man1/compress.1' > $startdir/pkg/usr/man/man1/uncompress.1

	# diskcopy & xx
	install -m 755 $startdir/src/diskcopy $startdir/pkg/usr/bin/
	install -m 755 $startdir/src/xx $startdir/pkg/usr/bin/
}

# vim: ft=sh
