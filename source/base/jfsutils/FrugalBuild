pkgname=jfsutils
pkgver=1.1.9
pkgrel=1
pkgdesc="JFS filesystem utilities"
url="http://www-124.ibm.com/developerworks/oss/jfs/"
depends=('e2fsprogs')
groups=('base')
archs=('i686' 'x86_64')
up2date="lynx -dump http://jfs.sourceforge.net/source.html|grep jfsutils.*tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://jfs.sourceforge.net/project/pub/$pkgname-$pkgver.tar.gz)
sha1sums=('ffe5b982f1ae86cd75131af6044a54380050fa55')

build()
{
	Fbuild
	Fmv /usr/sbin /
}

# optimalization ok

