pkgname=jfsutils
pkgver=1.1.7
pkgrel=1
pkgdesc="JFS filesystem utilities"
url="http://www-124.ibm.com/developerworks/oss/jfs/"
depends=('glibc')
up2date=`lynx -dump 'http://oss.software.ibm.com/developer/opensource/jfs/project/pub/?C=M&O=D'|grep jfsutils|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 3|sed 's/.tar.gz//'|cut -d - -f 2`
source=(http://www10.software.ibm.com/developer/opensource/jfs/project/pub/jfsutils-$pkgver.tar.gz)
md5sums=('eef2b8a6644b610b4c9d013452abfd6c')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  mv $startdir/pkg/usr/sbin $startdir/pkg
}
