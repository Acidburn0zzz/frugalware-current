pkgname=zip
pkgver=2.31
pkgrel=1
pkgdesc="Info-ZIP's zip utility"
url="http://www.info-zip.org/Zip.html"
depends=('glibc')
groups=('base')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.info-zip.org/Zip.html|grep Zip|sed -n 's/.*p \(.*\) \[.*/\1/;1 p'"
source=(http://ftp.info-zip.org/pub/infozip/src/zip231.tar.gz)
md5sums=('6bfc076664416251d7624ab3538d1cb9')

build()
{
	Fsed '$(INSTALL)' '$(INSTALL_PROGRAM)' unix/Makefile
	make -f unix/Makefile LOCAL_ZIP="$CFLAGS" prefix=/usr generic_gcc || return 1
	make -f unix/Makefile prefix=$Fdestdir/usr install
}

# vim: ft=sh
