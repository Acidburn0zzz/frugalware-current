pkgname=xfsprogs-attr
pkgver=2.4.20
pkgrel=1
pkgdesc="Dynamic library for extended attribute support."
url="http://oss.sgi.com/projects/xfs/"
depends=('glibc')
groups=('base')
archs=('i686' 'x86_64')
# Need to fix
up2date="wget --passive-ftp -O - -q ftp://oss.sgi.com/projects/xfs/cmd_tars/|grep attr|sed 's/.*-\(.*\)\.s.*/\1/'"
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/attr-$pkgver.src.tar.gz)
md5sums=('af9b418a6f542aaab39d132d3c94a730')

build()
{
	Fcd attr-$pkgver
	Fmake --libdir=/lib --libexecdir=/usr/lib|| return 1
	make DIST_ROOT=$Fdestdir install-dev install-lib install || return 1
}

# optimalization ok

