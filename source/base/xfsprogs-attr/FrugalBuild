pkgname=xfsprogs-attr
pkgver=2.4.24
pkgrel=1
pkgdesc="Dynamic library for extended attribute support."
url="http://oss.sgi.com/projects/xfs/"
depends=('glibc')
groups=('base')
archs=('i686' 'x86_64')
up2date="lynx -dump ftp://oss.sgi.com/projects/xfs/cmd_tars/|grep attr-.*gz$|sed 's/.*-\(.*\)\.s.*/\1/'"
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/attr-$pkgver.src.tar.gz)
sha1sums=('af62988c07d2aabf9def02144408f8dcb03805cf')

build()
{
	Fcd attr-$pkgver
	Fmake --libdir=/lib --libexecdir=/usr/lib
	make DIST_ROOT=$Fdestdir install-dev install-lib install || return 1
}

# optimalization OK

