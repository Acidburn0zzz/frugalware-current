pkgname=findutils
pkgver=4.2.2
pkgrel=1
pkgdesc="Basic directory searching utilities"
depends=('glibc' 'bash')
url="http://www.gnu.org/software/findutils"
pkgurl="ftp://alpha.gnu.org/pub/gnu/findutils"
up2date=`wget --passive-ftp -O - -q $pkgurl/|grep 'findutils.*.tar.gz<'|tail -n 1|sed 's/.*s-\(.*\)\.t.*/\1/'`
source=($pkgurl/$pkgname-$pkgver.tar.gz)
md5sums=('f1c888052d61a8626753c44d950b2bc0')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make prefix=$startdir/pkg/usr install
	# conflicts with slocate
	rm $startdir/pkg/usr/bin/locate $startdir/pkg/usr/man/man1/locate.*
	rm $startdir/pkg/usr/bin/updatedb $startdir/pkg/usr/man/man1/updatedb.*
}

# vim: ft=sh
