pkgname=ed
pkgver=0.2
pkgrel=2
pkgdesc="A POSIX-compliant line editor"
url="http://www.gnu.org/software/ed/ed.html"
depends=('glibc')
groups=('base')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump 'http://ftp.gnu.org/pub/gnu/ed/?M=D'|grep tar.gz$|sed -n 's/.*d-\(.*\)\.t.*/\1/;1 p'"
source=(http://ftp.gnu.org/pub/gnu/ed/$pkgname-$pkgver.tar.gz ed-0.2-configure-hax.patch \
	ed-0.2-mkstemp.patch)
sha1sums=('abb61231a3baeb988b145ffe97cdbaea8f651d93' \
	  '80a81f866e0cfa0cda0e1b097c80db1307371b98' \
	  '6ba577e99dbfa1d592c5486197865b1c2483ac75')

build () {
	Fcd
	Fpatchall
	autoreconf
	Fmake
	Fmakeinstall
}

# optimization ok
