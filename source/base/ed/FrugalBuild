pkgname=ed
pkgver=0.2
pkgrel=1
pkgdesc="A POSIX-compliant line editor"
url="http://www.gnu.org/software/ed/ed.html"
depends=('glibc')
up2date=`lynx -dump 'http://ftp.gnu.org/pub/gnu/ed/?M=D'|grep tar.gz|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 4|sed 's/.tar.gz//'|cut -d - -f 2`
source=(ftp://ftp.gnu.org/pub/gnu/ed/$pkgname-$pkgver.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
}
