# arg 1:  the new package version
post_install() {
  chkconfig --add rc.syslog
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  /bin/true
}

# arg 1:  the old package version
pre_remove() {
  /bin/true
}

# arg 1:  the old package version
post_remove() {
  chkconfig --del rc.syslog
}

op=$1
shift
$op $*
