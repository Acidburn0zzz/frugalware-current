# arg 1:  the new package version
post_install() {
  chkconfig --add rc.hostname
  chkconfig --add rc.interfaces
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install
}

# arg 1:  the old package version
pre_remove() {
  /bin/true
}

# arg 1:  the old package version
post_remove() {
  chkconfig --del rc.hostname
}

op=$1
shift
$op $*
