# Compiling Time: 0.07 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=net-tools
pkgver=1.60
pkgrel=22
pkgdesc="Important tools for controlling the network subsystem"
url="http://www.tazenda.demon.co.uk/phil/net-tools/"
depends=('mktemp' 'chkconfig')
groups=('base' 'chroot-core')
conflicts=('hotplug')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump $url |tail -n 1|tr '-' '\n'|sed 's/.tar.bz2//'|tail -n 1"
source=(ftp://ftp.frugalware.org/pub/other/$pkgname/$pkgname-$pkgver.tar.gz \
        $pkgname-$pkgver-configure.diff net-tools-1.60-mii-tool-obsolete.patch \
	rc.hostname rc.interfaces rc.interfaces-hu.po)

build()
{
	unset MAKEFLAGS
	Fcd $pkgname
	Fpatchall
	Fsed '^\(COPTS = .*\) -O2 \(.*\)' "\1 $CFLAGS \2" Makefile
	Fmake
	make BASEDIR=$Fdestdir update
	
	Fln ../../bin/hostname /usr/bin/hostname
	Frcd hostname
	Frcd2 interfaces
}
sha1sums=('fdefe702c7f2427f9ff3d329e9b4f9fc4db2be22' \
	  'ffc3cd8044f83af7f0dd544d767d5d7623b91093' \
	  'fe9c2e8248920f0c8c6fb0214f19eef1f8e6e77a' \
	  '168330ad740abdeaf79dac58e682f73110454969' \
	  'bc760528da58cafcfc06c1a9bb52b69edef21cc8' \
	  'e4830a27efaab43d5c98888e2070e2d1f3c26972')

# optimization OK
