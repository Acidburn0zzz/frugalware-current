. /etc/rc.d/rc.functions

if [ "$1" = "start" ]; then
	spaces=$(((`tput cols`-`echo -ne $frugalwaregreet|wc -m`)/2))
	for i in `seq 1 $spaces`
	do
		echo -n ' '
	done
	echo -e $frugalwaregreet
fi
