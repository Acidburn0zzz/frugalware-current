# Last Modified: Mon, 25 Apr 2005 19:33:26 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=frugalware
pkgver=0.2
pkgrel=1
pkgdesc="Basic Frugalware Linux filesystem package"
depends=()
groups=('base' 'core')
archs=('i686' 'x86_64')
backup=(etc/{profile.d/lang.sh,issue.net,ld.so.conf,nsswitch.conf,securetty,termcap})
install=$pkgname.install
up2date="cat frugalware-release |sed 's/.* \(.*\) .*/\1/'"
source=(http://ftp.frugalware.org/pub/other/$pkgname/$pkgname-$pkgver.tar.gz \
	frugalware-release issue rc.frugalware service xconfig xwmconfig)
md5sums=('554693c4cfad780d0a57401787040a01' '14468545b7cf72b0d34d17952ce1a3fa' \
	 '6bdd1a22eb6143ebfacbfe27210a610b' '3a42db6a07205af4be76c45e5a1abd0a' \
	 'fdf5512d9a75f3041f7b2da9bd33cb4b' 'e8d1500697d626f99e73afe10e67bc75' \
	 '0c9e1a71061abc6689de51b7f9920a4e')

build()
{
	Fcd
	mv * $Fdestdir
	Ffile frugalware-release issue /etc/
	Fsed "%version%" "$pkgver" $Fdestdir/etc/issue
	Frcd
	for i in service xconfig xwmconfig
	do
		Fexe $i /var/lib/frugalware/system/$i
		Ffile ../messages/$i.* /var/lib/frugalware/messages/
		Fln ../var/lib/frugalware/system/$i /sbin/$i
	done
}

# vim: ft=sh
