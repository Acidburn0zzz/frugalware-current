# Modified by Laszlo Dvornik <dvornik@gnome.hu>

pkgname=frugalware
pkgver=0.3
pkgrel=1
pkgdesc="Basic Frugalware Linux filesystem package"
depends=()
groups=('base' 'core')
archs=('i686' 'x86_64')
backup=(etc/{profile.d/lang.sh,issue.net,ld.so.conf,nsswitch.conf,securetty,termcap})
up2date="cat frugalware-release |sed 's/.* \(.*\) .*/\1/'"
source=(http://ftp.frugalware.org/pub/other/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-release \
	issue \
	rc.frugalware \
	service \
	xconfig \
	xwmconfig)
sha1sums=('951a9a8890b08c0bcc2600bbc4d35a0471a1226f' \
	  '0410b9f9bf487df09c2f067ae807ad2ec3a4d558' \
	  'f8f8b4fab80bc0c01485bae0f1313163cf194359' \
	  'f50bfcca5bc97f823ac8aac08588ff441bc4b07b' \
	  'fbd901f035ae32baea96ef714df5fb6d443a7478' \
	  'abc09664497aa76671d0a7cc81010ad99df3592e' \
	  '232c5719e08073e78730fa2d7ecaa05fd706b601')

build()
{
	Fcd
	mv * $Fdestdir
	Ffile $pkgname-release issue /etc/
	Fsed "%version%" "$pkgver" $Fdestdir/etc/issue
	Frcd
	for i in service xconfig xwmconfig
	do
		Fexe $i /var/lib/frugalware/system/$i
		Ffile ../messages/$i.* /var/lib/frugalware/messages/
		Fln ../var/lib/frugalware/system/$i /sbin/$i
	done
	if [ "$CARCH" == "x86_64" ]; then
		Fln /lib /lib64
		Fln /usr/lib /usr/lib64
		Fln /usr/local/lib /usr/local/lib64
	fi
}

# vim: ft=sh
