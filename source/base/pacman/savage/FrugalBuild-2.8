pkgname=pacman
pkgver=2.8
pkgrel=1
pkgdesc="A .tar.gz based package manager with dependency support"
url="http://www.archlinux.org/pacman"
backup=('etc/pacman.conf' 'etc/makepkg.conf')
makedepends=('libtar')
install=pacman.install
up2date=`lynx -dump 'http://www.archlinux.org/packages.php?s_repo=all&s_category=all&s_keyword=pacman&s_lastupdate=&pp=50'|grep pacman|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 5|cut -d - -f 1`
source=(ftp://ftp.archlinux.org/other/pacman/$pkgname-$pkgver.tar.gz \
        $pkgname-$pkgver.diff checkworld movepkg pacman.conf)
md5sums=('18b02bb6a07eb44895355353b75db135' '1db6342e54ebb35603d05d0b29e0095c' \
         'e7ec4065949552c6f9491c73bf67a379' '6be7fd5f62894978c6620e588e41c39f' \
	 'f7ae55d4d7d4910dd25181f2ec853869')

build() {
  cd $startdir/src
  patch -p0 <$pkgname-$pkgver.diff
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -m755 $startdir/src/checkworld $startdir/pkg/usr/bin/
  install -m755 $startdir/src/movepkg $startdir/pkg/usr/bin/
  install -m644 $startdir/src/pacman.conf $startdir/pkg/etc/
}
