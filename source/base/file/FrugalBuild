pkgname=file
pkgver=4.10
pkgrel=1
pkgdesc="File type identification utility"
depends=('glibc' 'zlib')
up2date=`wget --passive-ftp -O - -q ftp://ftp.astron.com/pub/file/ |grep file |grep tar.gz|tail -n 1|cut -d '>' -f 2|cut -d '<' -f 1|sed 's/.tar.gz//'|cut -d - -f 2`
source=(ftp://ftp.astron.com/pub/file/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-zisofs.diff $pkgname-$pkgver-silent.diff)
md5sums=('c3cf1bda84a9d55896d4b7dd2caee68d' \
	 '1757c5e31f08019989b2f0b6842b0d4f' '028a2c64a56ce0d381a8e6abc8ba1d9a')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/$pkgname-$pkgver-zisofs.diff
	patch -p1 < $startdir/src/$pkgname-$pkgver-silent.diff
	./configure --prefix=/usr --sysconfdir=/etc --datadir=/etc \
		    --enable-fsect-man5 --enable-shared=no

	make || return 1

	make DESTDIR=$startdir/pkg install
	cd $startdir/pkg/etc
	ln -sf file/magic magic
}
