# Compiling Time: ~0.08 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=file
pkgver=4.16
pkgrel=1
pkgdesc="File type identification utility"
depends=('glibc' 'zlib')
groups=('base' 'chroot-core')
archs=('i686' 'x86_64')
up2date="wget --passive-ftp -O - -q ftp://ftp.astron.com/pub/file/ |grep file |grep tar.gz|tail -n 1|cut -d '>' -f 2|cut -d '<' -f 1|sed 's/.tar.gz//'|cut -d - -f 2"
source=(ftp://ftp.astron.com/pub/file/$pkgname-$pkgver.tar.gz \
	$pkgname-4.13-zisofs.diff $pkgname-4.13-silent.diff)
sha1sums=('b002205b4f0d893adf594c5a13981156a98ba906' \
          '97a0d74d90f5e9c32ab6cacb07849df822d8883c' \
	  'faffff5bf502f340136ab9f4153b1c4385a30f11')

build()
{
	Fpatchall
	Fmake --datadir=/etc --enable-fsect-man5 --enable-shared=no
	make DESTDIR=$Fdestdir install
	Fln /etc/file/magic /etc/magic
}

# optimalization OK

