# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=file
pkgver=4.13
pkgrel=2
pkgdesc="File type identification utility"
depends=('glibc' 'zlib')
groups=('base')
up2date="wget --passive-ftp -O - -q ftp://ftp.astron.com/pub/file/ |grep file |grep tar.gz|tail -n 1|cut -d '>' -f 2|cut -d '<' -f 1|sed 's/.tar.gz//'|cut -d - -f 2"
source=(ftp://ftp.astron.com/pub/file/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-zisofs.diff $pkgname-$pkgver-silent.diff)
md5sums=('2bfc0f878ee22e50441b68df2ccbb984' \
	 '1757c5e31f08019989b2f0b6842b0d4f' '3098c41382d1da39518506b512bd98dd')

build()
{
	Fpatchall || return 1
	Fmake --sysconfdir=/etc --datadir=/etc --enable-fsect-man5 \
		--enable-shared=no || return 1
	make DESTDIR=$Fdestdir install
	Fln /etc/file/magic /etc/magic
}

# vim: ft=sh
