# Last Modified: Wed, 18 Jan 2006 22:39:23 +0100
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=xfsprogs-dmapi
pkgver=2.2.3
pkgrel=1
pkgdesc="Data Management API static libraries and headers."
url="http://oss.sgi.com/projects/xfs/"
depends=('xfsprogs')
groups=('base')
archs=('i686' 'x86_64')
up2date="wget --passive-ftp -O - -q ftp://oss.sgi.com/projects/xfs/cmd_tars/|grep dmapi|sed 's/.*-\(.*\)\.s.*/\1/'"
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/dmapi-$pkgver.src.tar.gz)
sha1sums=('47e477480258380aaf8a764f4b1626ae46913ec5')

build()
{
	Fcd dmapi-$pkgver
	Fsed "\(^PKG_DOC_DIR\).*" "\1 = /usr/share/doc/$pkgname-$pkgver" include/builddefs.in
	Fmake --libdir=/lib --libexecdir=/usr/lib
	make DIST_ROOT=$Fdestdir install install-dev || return 1
}

# optimalization ok
