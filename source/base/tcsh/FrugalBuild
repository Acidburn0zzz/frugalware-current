# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=tcsh
pkgver=6.13.00
pkgrel=3
pkgdesc="Enhanced version of the Berkeley C shell"
url="http://www.tcsh.org/Welcome"
depends=('ncurses')
backup=(etc/csh.login)
up2date=`lynx -dump http://www.tcsh.org/MostRecentRelease|sed 's/\. / /'|grep release|tr -s ' '|cut -d ' ' -f 8`
source=(ftp://ftp.astron.com/pub/tcsh/tcsh-$pkgver.tar.gz \
	ftp://ftp.funet.fi/pub/unix/shells/tcsh/tcsh.man csh.login)
install=tcsh.install
md5sums=('11c0c9c9148652dc01270c4880d1cc6e' '6b9329559e70963894a2f0c1669d3f70' \
	 'fb68ac4175edf3ff3e2393d892f5b434')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  
  make || return 1
  
  make DESTDIR=$startdir/pkg install
  install -D -m644 $startdir/src/tcsh.man $startdir/pkg/usr/man/man1/tcsh.1
  install -D -m644 $startdir/src/csh.login $startdir/pkg/etc/csh.login
  cd $startdir/pkg/ && mv usr/bin .
  cd bin && ln -sf tcsh csh
}
