# Last Modified: Mon, 04 Apr 2005 13:53:53 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=tcsh
pkgver=6.14.00
pkgrel=1
pkgdesc="Enhanced version of the Berkeley C shell"
url="http://www.tcsh.org/Welcome"
depends=('ncurses')
groups=('base')
archs=('i686' 'x86_64')
backup=(etc/csh.login)
up2date="lynx -dump http://www.tcsh.org/MostRecentRelease|sed 's/\. / /'|grep release|tr -s ' '|cut -d ' ' -f 8"
source=(ftp://ftp.astron.com/pub/tcsh/tcsh-$pkgver.tar.gz \
	ftp://ftp.funet.fi/pub/unix/shells/tcsh/tcsh.man csh.login)
install=$pkgname.install
md5sums=('353d1bb7d2741bf8de602c7b6f0efd79' '6b9329559e70963894a2f0c1669d3f70' \
	 'fb68ac4175edf3ff3e2393d892f5b434')

build()
{
	Fbuild || return 1
	Ffile tcsh.man /usr/man/man1/tcsh.1
	Ffile /etc/csh.login
	Fmv /usr/bin /
	Fln tcsh /bin/csh
}

# optimalization ok

# vim: ft=sh
