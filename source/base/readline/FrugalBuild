# Compiling Time: 0.12 SBU
# Maintainer: Michel Hermier <hermier@frugalware.org>

pkgname=readline
pkgver=6.3
pkgrel=1
pkgdesc="GNU readline library"
url="http://www.gnu.org/"
depends=('ncurses>=5.6-4')
groups=('base' 'chroot-core')
archs=('i686' 'x86_64' 'arm')
backup=("etc/inputrc")
Fup2gnugz
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz \
	inputrc \
	readline.sh)
sha1sums=('017b92dc7fd4e636a2b5c9265a77ccc05798c9e1' \
          '39e29b3077ddd60dba35376c532ca83e978606a7' \
          'dec827003e9f1e029d57f3d32fa67a41ef3d0cd6')

build()
{
	Fcd
	Fconf

	make SHLIB_LIBS=-lncurses || Fdie

	unset MAKEFLAGS
	Fmakeinstall
	Ffile /etc/inputrc
	Fexe /etc/profile.d/readline.sh
	Ffileschmod "usr/lib/lib*.so.$pkgver" 0755
}

# optimization OK
