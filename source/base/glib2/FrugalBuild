# Compiling time: 3.33 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=glib2
pkgver=2.16.4
pkgrel=1
pkgdesc="Common C routines used by GTK+2 and other libraries"
url="http://www.gtk.org/"
depends=('glibc>=2.7-3')
makedepends=('gtk-doc>=1.8-2' 'libgcrypt>=1.4.0-2')
groups=('base' 'chroot-core')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_gnome_name="glib"
_F_gnome_devel="n"
Finclude gnome
#source=($source)
_F_cd_path="glib-$pkgver"
## DON'T remove nor change the debug level or it breaks again ..
sha1sums=('8d0d71a863f9db18b0c581b6382d37719ae3df50')

subpkgs=("$pkgname-docs")
subdescs=("Glib2 Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64')

build()
{
	Fbuild \
		--enable-gtk-doc \
		--enable-static \
		--with-threads=posix \
		--enable-debug=yes
	Fsplit $pkgname-docs usr/share/gtk-doc
}

# optimization OK
