pkgname=glib2
pkgver=2.12.13
pkgrel=1
pkgdesc="Common C routines used by GTK+2 and other libraries"
url="http://www.gtk.org/"
depends=('glibc')
makedepends=('gtk-doc')
groups=('base' 'chroot-core')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_gnome_name="glib"
_F_gnome_devel="n"
Finclude gnome
_F_cd_path="glib-$pkgver"
Fconfopts="$Fconfopts --enable-gtk-doc --enable-static"
sha1sums=('81ce0e53f5583be970623d12523c785a392647bf')

