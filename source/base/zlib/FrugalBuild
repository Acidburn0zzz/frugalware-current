pkgname=zlib
pkgver=1.2.2
pkgrel=1
pkgdesc="A compression/decompression library"
url="http://www.zlib.net/"
depends=('glibc')
up2date=`lynx -dump http://www.zlib.net/|grep zlib|less|sed -n '4 p'|tr -s ' '|cut -d ' ' -f 3`
source=(http://www.zlib.net/$pkgname-$pkgver.tar.bz2)
md5sums=('1b8aab042d40979e456194c468fd72c5')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --shared --prefix=/usr

	make || return 1

	mkdir -p $startdir/pkg/usr/{lib,include,man/man3}
	make prefix=$startdir/pkg/usr install

	./configure --prefix=/usr

	make || return 1

	mkdir -p $startdir/pkg/usr/{lib,include}
	make prefix=$startdir/pkg/usr install
	cp $pkgname.3 $startdir/pkg/usr/man/man3
}

# vim: ft=sh
