
post_install()
{
	getent passwd man 2>&1 > /dev/null || /usr/sbin/useradd -u 70 -s /bin/false -c "man" -d '/' -g root man
}

post_upgrade()
{
	if [[ $(id -u man) != 70 ]]; then /usr/sbin/userdel man; fi
	post_install
}

post_remove()
{
	getent passwd man 2>&1 > /dev/null && /usr/sbin/userdel man
}

op=$1
shift
$op $*
