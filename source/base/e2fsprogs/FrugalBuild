# Last modified: Wed, 23 Mar 2005 12:39:26 +0100
# Compiling time: ~2 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>
# Modified by Laszlo Dvornik <dvornik@gnome.hu>

pkgname=e2fsprogs
pkgver=1.37
pkgrel=1
pkgdesc="Utilities needed to create and maintain ext2 and ext3 filesystems"
url="http://e2fsprogs.sourceforge.net/"
depends=('glibc')
groups=('base')
archs=('i686')
install=$pkgname.install
up2date="elinks -dump 'http://prdownloads.sourceforge.net/e2fsprogs/?sort_by=date&sort=desc'|grep 'e2fsprogs-[0-9\.]*tar.gz'|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz \
	rc.fsck \
	rc.random)
md5sums=('084b49e919121fc0bf53c8dae23a71f8' 'f0d94875203cf7e6a2973753d9fd1475' \
	 'e5cedca2b00c5b2d3f4d28f3e1116cfa')

build()
{
	Fmake --enable-elf-shlibs --enable-dynamic-e2fsck \
		--with-root-prefix="" || return 1
	make DESTDIR=$Fdestdir install install-libs
	Frcd fsck
	Frcd random
}

# vim: ft=sh
