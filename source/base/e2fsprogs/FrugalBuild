pkgname=e2fsprogs
pkgver=1.35
pkgrel=5
pkgdesc="Utilities needed to create and maintain ext2 and ext3 filesystems."
url="http://e2fsprogs.sourceforge.net"
depends=('glibc' 'bash')
install=$pkgname.install
up2date=`lynx -dump http://sourceforge.net/projects/e2fsprogs|grep -1 Version|sed -n '3 p'|tr -s ' '|cut -d ' ' -f 3|cut -d ] -f 2`
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz \
        rc.fsck rc.random)
md5sums=('8d25ffd60d405ef32d341704a2323807' '90ec54c3f329f241e08110c7b81e18e8' \
         '3afc11baa170c40679281da175341e7b')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --enable-elf-shlibs \
		--enable-dynamic-e2fsck --with-root-prefix=""
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install install-libs
	mkdir -p $startdir/pkg/etc/rc.d/rc.messages
	install -m755 $startdir/rc.{fsck,random} $startdir/pkg/etc/rc.d/
	install -m644 $startdir/messages/{fsck,random}.* \
		$startdir/pkg/etc/rc.d/rc.messages/
}

# vim: ft=sh
