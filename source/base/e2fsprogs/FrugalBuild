pkgname=e2fsprogs
pkgver=1.38
pkgrel=2
pkgdesc="Utilities needed to create and maintain ext2 and ext3 filesystems"
url="http://e2fsprogs.sourceforge.net/"
depends=('glibc')
groups=('base' 'chroot-core')
archs=('i686' 'x86_64' 'ppc')
install=$pkgname.install
up2date="lynx -dump 'http://prdownloads.sourceforge.net/e2fsprogs/?sort_by=date&sort=desc'|grep 'e2fsprogs-[0-9\.]*tar.gz'|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz rc.fsck \
	rc.random)
sha1sums=('aa8915fe43bc7cf5fba633df7041009ce9981551' \
	  'a4b2ac27c9e155b29a7dea6e7693f449e6ce6c9f' \
	  '7d5e3eecbea952aa1f72808fb810892d82a35461')

build()
{
	Fmake --with-ccopts="$CFLAGS" --enable-elf-shlibs --enable-dynamic-e2fsck \
		--with-root-prefix=""
	make test
	make DESTDIR=$Fdestdir install install-libs
	Frcd fsck
	Frcd random
}

# optimization OK
