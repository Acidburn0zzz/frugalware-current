pkgname=adjtimex
pkgver=1.13
pkgrel=1
pkgdesc="display or set the kernel time variables"
url="http://www.ibiblio.org/linsearch/lsms/adjtimex.html"
depends=('glibc')
up2date=`lynx -dump http://www.ibiblio.org/linsearch/lsms/adjtimex.html |grep Version|tr -s ' '|cut -d ' ' -f 3`
source=(http://www.ibiblio.org/pub/Linux/system/admin/time/$pkgname-$pkgver.tar.gz \
        adjtimex-gcc3.diff)
md5sums=('2cc7bb2904b5ed3cd04c90665ffcb42c' '2c72a19e72026c9220efbf3008cb1f3a')

build() {
  cd $startdir/src/
  cat $startdir/src/adjtimex-gcc3.diff|patch -p0
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  install -D -m 755 adjtimex -o root -g bin $startdir/pkg/sbin/adjtimex
  install -D -m 644 adjtimex.8 $startdir/pkg/usr/man/man8/adjtimex.8
}
