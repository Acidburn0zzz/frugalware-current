. /etc/rc.d/rc.functions

# chkconfig: 2345 80 50
# description: Load the keyboard map, specified in /etc/sysconfig/keymap


if [ "$1" = "start" ]; then
	start "$startkeymap"
	if [ -e /etc/sysconfig/keymap ]; then
		. /etc/sysconfig/keymap
	else
		ok 1
		exit 1
	fi
	loadkeys $keymap 2>/dev/null
	ok $?
fi
