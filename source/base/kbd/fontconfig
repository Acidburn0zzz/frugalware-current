# based on Slackware's setup.screenfont

# strings - should move to /var/lib/frugalware/messages

. /var/lib/frugalware/messages/rc.messages

TMP=/var/lib/frugalware/tmp
backtitle="$backstring - FrugalWare `cat /etc/frugalware-release |cut -d ' ' -f 2` $setup"


load_font() {
  setfont $*
  if [ ! $? = 0 ]; then
    if [ -r $T_PX/usr/share/kbd/consolefonts/$1 ]; then
      setfont $T_PX/usr/share/kbd/consolefonts/$* 1> /dev/null 2> /dev/null
    elif [ -r $T_PX/usr/lib/kbd/consolefonts/$1 ]; then
      setfont $T_PX/usr/lib/kbd/consolefonts/$* 1> /dev/null 2> /dev/null
    elif [ -r /var/adm/mount/live/usr/lib/kbd/consolefonts/$1 ]; then
      setfont /var/adm/mount/live/usr/lib/kbd/consolefonts/$* 1> /dev/null 2> /dev/null
    else # load default font
      setfont
    fi
  fi
}

  T_PX=$1

  if [ ! "$1" = "" ]; then
    dialog --backtitle "$backtitle" --title "$consoleconf" --defaultno --yesno "$wouldyou" 0 0
    if [ $? = 1 ]; then
      exit
    fi
  fi
  REPLY=`mktemp -q $TMP/temp.XXXXXX`
  FONT="161.cp.gz -16"
  while [ 0 ]; do
    dialog --backtitle "$backtitle" --default-item "$FONT" --title "$selfont" --menu "$selmenu" 0 0 0 \
