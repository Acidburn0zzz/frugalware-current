# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=gptfdisk
pkgver=1.0.1
pkgrel=5
pkgdesc="A clone of fdisk that works on GPT disks instead of MBR disks."
depends=('libuuid>=2.29.2-3' 'libstdc++>=6.3.1-4' 'ncurses>=6.0-16' 'popt>=1.16-7')
groups=('base')
archs=('x86_64')
_F_sourceforge_ext='.tar.gz'
Finclude sourceforge
sha1sums=('ad28c511c642235815b83fffddf728c117057cba')

build()
{
	Fcd
	Fpatchall
	Fmake
	Fexerel /sbin/cgdisk
	Fexerel /sbin/gdisk
	Fexerel /sbin/sgdisk
	Fexerel /sbin/fixparts
	Fmanrel *.8
}

# optimization OK
