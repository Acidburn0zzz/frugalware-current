# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=gptfdisk
pkgver=1.0.1
pkgrel=3
pkgdesc="A clone of fdisk that works on GPT disks instead of MBR disks."
depends=('libuuid>=2.27.1-3' 'libstdc++>=5.3.0-2' 'ncurses>=6.0-4' 'popt>=1.16-4')
groups=('base')
archs=('i686' 'x86_64')
_F_sourceforge_ext='.tar.gz'
Finclude sourceforge
sha1sums=('ad28c511c642235815b83fffddf728c117057cba')

build()
{
	Fcd
	Fpatchall
	Fmake
	Fexerel /sbin/cgdisk
	Fexerel /sbin/gdisk
	Fexerel /sbin/sgdisk
	Fexerel /sbin/fixparts
	Fmanrel *.8
}

# optimization OK
