# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=gptfdisk
pkgver=1.0.0
pkgrel=1
pkgdesc="A clone of fdisk that works on GPT disks instead of MBR disks."
depends=('libuuid>=2.27-3' 'libstdc++>=5.2.0-3' 'ncurses>=5.9-3' 'popt>=1.16-3')
groups=('base')
archs=('i686' 'x86_64')
_F_sourceforge_ext='.tar.gz'
Finclude sourceforge
sha1sums=('97f25db2def1c1939ed3954520bfd9948806d95a')

build()
{
	Fcd
	Fpatchall
	Fmake
	Fexerel /sbin/cgdisk
	Fexerel /sbin/gdisk
	Fexerel /sbin/sgdisk
	Fexerel /sbin/fixparts
	Fmanrel *.8
}

# optimization OK
