pkgname=grep
pkgver=2.5.1
pkgrel=1
pkgdesc="Print lines matching a pattern"
url="http://www.gnu.org/software/grep/grep.html"
depends=('glibc' 'bash' 'pcre')
up2date=`lynx -dump 'http://ftp.gnu.org/pub/gnu/grep/?M=D'|grep tar.gz$|sed -ne 's/.*p-\(.*\).tar.gz$/\1/;1 p'`
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('85df024edc9f9689035f6b3de28c7731')

build() {
	cd $startdir/src/$pkgname-$pkgver
	# patch -p1 < $startdir/src/$pkgname-destdir.diff
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
	mkdir $startdir/pkg/bin
	cd $startdir/pkg/bin
	mv $startdir/pkg/usr/bin/* ./
	cd ../usr/bin
	ln -sf ../../bin/grep ./
	ln -s grep fgrep
	ln -s grep egrep
}

# vim: ft=sh
