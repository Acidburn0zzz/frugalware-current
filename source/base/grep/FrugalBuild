# Last Modified: Sun, 10 Apr 2005 22:47:13 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=grep
pkgver=2.5.1
extrapkgver=a
pkgrel=3
pkgdesc="Print lines matching a pattern"
url="http://www.gnu.org/software/grep/grep.html"
depends=('pcre')
groups=('base' 'core')
up2date="lynx -dump 'http://ftp.gnu.org/pub/gnu/grep/?M=D'|grep tar.gz$|sed -n \"s/.*p-\(.*\).tar.gz$/\1/;s/$extrapkgver//;1 p\""
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver$extrapkgver.tar.gz)
md5sums=('71db1cb262c27f02461c4bca514591ce')

build()
{
	Fcd $pkgname-$pkgver$extrapkgver
	Fbuild || return 1
	Fmv /usr/bin /
	Fln ../../bin/grep /usr/bin/grep
	Fln grep /usr/bin/fgrep
	Fln grep /usr/bin/egrep
}

# vim: ft=sh
