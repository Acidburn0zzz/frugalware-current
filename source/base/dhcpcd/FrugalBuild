# Compiling Time: 0.01 SBU
# Contributor: VMiklos <vmiklos@frugalware.org>
# Maintainer: Zsolt Szalai <xbit.lists@chello.hu>

pkgname=dhcpcd
pkgver=1.3.22pl4
origver=`echo $pkgver|sed 's/p/-p/'`
pkgrel=4
pkgdesc="A DHCP client daemon"
url="http://www.phystech.com/download/dhcpcd.html"
groups=('base')
archs=('i686' 'x86_64')
# frugalwareutils is tricky, should stay here to prevent upgrade problems
# till 0.5
depends=('glibc' 'frugalwareutils')
up2date="lynx -dump 'http://www.phystech.com/ftp/?M=D'|grep dhcp.*tar.gz$|sed -n -e 's/.*d-\(.*\)\.t.*/\1/' -e 's/-//' -e '1 p'"
source=(http://www.phystech.com/ftp/$pkgname-$origver.tar.gz \
	dhcpcd-1.3.22pl4-CAN_2005_1848.diff)
sha1sums=('bf5cbe68fbadd5597a1ccbf78848af5beff4b6e6' \
	  '7871f21df5d9dc0e395d13d5192412b8ae00b174')

build()
{
	Fcd $pkgname-$origver
	[ "$CARCH" == "x86_64" ] && Fautoconfize
	Fbuild
	Fmkdir /sbin
	Fmv /usr/sbin/dhcpcd /sbin
}

# optimization OK
