pkgname=libgcrypt
pkgver=1.5.0
pkgrel=5arcturus1
pkgdesc="Libgcrypt is a general purpose cryptographic library based on the code from GnuPG."
url="http://www.gnu.org/directory/security/libgcrypt.html"
groups=('base' 'core')
archs=('i686' 'x86_64' 'arm')
depends=('libgpg-error>=1.10-2')
up2date="lynx -dump ftp://ftp.gnupg.org/gcrypt/$pkgname |Flasttar"
source=(ftp://ftp.gnupg.org/gcrypt/$pkgname/$pkgname-$pkgver.tar.bz2)
signatures=($source.sig)


# FSA fix ***
source=(${source[@]} CVE-2013-4242.patch CVE-2014-5270.patch
                     add_gcry_divide_by_zero.patch)
signatures=(${signatures[@]} '' '' '')
