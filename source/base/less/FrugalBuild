# Last Modified: Tue, 12 Apr 2005 00:36:29 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=less
pkgver=382
pkgrel=2
pkgdesc="A paginator similar to more"
url="http://www.greenwoodsoftware.com/less"
depends=('ncurses' 'bash' 'file')
groups=('base')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://ftp.gnu.org/pub/gnu/less/?M=D'|grep tar.gz$|sed -n 's/.*s-\(.*\)\.t.*/\1/;1 p'"
source=(http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('103fe4aef6297b93f0f73f38cc3b1bd7')

build()
{
	Fbuild --sysconfdir=/etc || return 1
	Fmkdir /bin
	Fmv /usr/bin/less /bin/
}

# optimalization ok

