pkgname=gdbm
pkgver=1.8.3
pkgrel=1
pkgdesc="GNU database library"
depends=('glibc')
url="http://www.gnu.org/software/gdbm/gdbm.html"
up2date=`lynx -dump 'http://ftp.gnu.org/pub/gnu/gdbm/?M=D' |grep gdbm |grep tar.gz |sed -n '1 p'|cut -d ] -f 3|tr -s ' '|cut -d ' ' -f 1|cut -d - -f 2|sed 's/.tar.gz//'`
source=(ftp://ftp.gnu.org/pub/gnu/gdbm/$pkgname-$pkgver.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make prefix=/usr || return 1
  make prefix=$startdir/pkg/usr install
  make prefix=$startdir/pkg/usr install-compat
}
