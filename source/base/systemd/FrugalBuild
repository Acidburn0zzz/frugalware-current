pkgver=224
pkgrel=7
pkgdesc="A System and Service Manager"
url="http://www.freedesktop.org/wiki/Software/systemd"
rodepends=('scriptlet-core')
depends=('dbus>=1.6.8-3' 'kmod>=16' 'pam' 'libcap' 'sysvinit-initscripts' \
	'pciutils' 'usbutils' 'libgcrypt>=1.6.1' 'libblkid>=2.26.2' 'lz4')
makedepends=('docbook-xsl>=1.73.0-2' 'docbook-xml' 'intltool' 'gperf' 'gtk-doc' \
	'lxml' 'python-sphinx' 'gnu-efi' 'iptables' 'curl')
if [ "$CARCH" != "arm" ]; then
	makedepends=("${makedepends[@]}" 'gobject-introspection')
fi
options=('scriptlet')
_F_github_tag=y
_F_github_tag_v=y
Finclude github
source=(${source[@]}
	frugalware_autovt.patch \
	frugalware_getty.patch \
	frugalware_utmp.patch \
	display-manager-legacy.service \
	console.conf \
	65-permissions.rules \
	blacklist \
	media.mount \
	var-lock.mount \
	var-run.mount \
	vconsole.conf \
	xorg-set-resolution.c \
	xorg-set-resolution.service)
sha1sums=('ecf6e8f64704a34627f2502d9f951c7a5e92141a' \
