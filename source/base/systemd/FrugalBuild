	'gperf>=3.0.4-3' 'gnu-efi>=3.0.3' 'lxml>=3.5.0' 'gobject-introspection>=1.46.0-2')
rodepends=('dbus' "libsystemd=$pkgver" 'scriptlet-core')
options+=('scriptlet')
_F_github_tag=y
