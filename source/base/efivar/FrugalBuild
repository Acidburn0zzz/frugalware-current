# Compiling Time: 0.03 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=efivar
pkgver=0.24
pkgrel=1
pkgdesc="Library to manipulate EFI variables"
url="https://github.com/vathpela/$pkgname"
depends=('popt>=1.16-4')
groups=('base')
archs=('!i686' 'x86_64')
_F_github_author="rhinstaller"
_F_github_tag=y
Finclude github
sha1sums=('e89eb5284dee812e22fb2e20a35757181361e477')

_F_make_opts="libdir=/usr/lib/ bindir=/usr/bin/ mandir=/usr/share/man/ includedir=/usr/include/ V=1"

build()
{
	Fcd
	Fsed "lib64" "lib" Make.defaults
	Fsed '-O0' '-Os' Make.defaults

	export OPT_FLAGS="$CFLAGS"
	Fbuild

}

# optimization OK
