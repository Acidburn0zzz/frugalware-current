# Compiling Time: 0.03 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=efivar
pkgver=30
pkgrel=2
pkgdesc="Library to manipulate EFI variables"
url="https://github.com/vathpela/$pkgname"
depends=('popt>=1.16-9')
groups=('base')
archs=('x86_64')
_F_github_author="rhinstaller"
_F_github_tag=y
Finclude github
sha1sums=('09db30e16aee6ea7edd67d4f5653b2536eb32652')
options+=('force' 'static')
_F_make_opts="libdir=/usr/lib/ bindir=/usr/bin/ mandir=/usr/share/man/ includedir=/usr/include/ V=1 -j1"

build()
{
	Fcd
	Fsed "lib64" "lib" Make.defaults
	Fsed '-O0' '-Os' Make.defaults
	CFLAGS+=" -flto"
	export OPT_FLAGS="$CFLAGS -flto"
	Fbuild

}

# optimization OK
