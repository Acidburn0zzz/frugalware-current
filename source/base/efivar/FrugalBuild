# Compiling Time: 0.03 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=efivar
pkgver=0.21
pkgrel=1
pkgdesc="Library to manipulate EFI variables"
url="https://github.com/vathpela/$pkgname"
depends=('popt')
groups=('base')
archs=('!i686' 'x86_64')
up2date="Flasttar https://github.com/vathpela/efivar-devel/releases"
source=(https://github.com/vathpela/$pkgname-devel/archive/$pkgver.tar.gz)
sha1sums=('b9f0874c4de340bc065d09ff08978ad0d05a6989')

build()
{
	Fcd $pkgname-devel-$pkgver
	Fsed "lib64" "lib" Make.defaults
	export OPT_FLAGS="$CFLAGS"
	Fbuild

}

# optimization OK
