# Compiling Time: 0.03 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=efivar
pkgver=0.22
pkgrel=1
pkgdesc="Library to manipulate EFI variables"
url="https://github.com/vathpela/$pkgname"
depends=('popt>=1.16-4')
groups=('base')
archs=('!i686' 'x86_64')
_F_github_author="vathpela"
_F_github_tag=" "
Finclude github
source=($source nvme_ioctl.h.patch do-not-create-circular-depends.patch)
sha1sums=('5b8723c5a08bfaff33c77bd53a78696099f4d4d2' \
	'eb3ac05788e90e89793b599d0f0101c816530d8f' \
	'e760be3d71eb6d33e0d900e69a73f1a7ef3e7d4f')

build()
{
	Fcd $pkgname-devel-$pkgver
	Fsed "lib64" "lib" Make.defaults
	export OPT_FLAGS="$CFLAGS"
	_F_make_opts="-j1"
	Fbuild

}

# optimization OK
