# Compiling time: 0.24 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=dbus-glib
pkgver=0.108
pkgrel=7
pkgdesc="Glib bindings for DBUS"
url="http://www.freedesktop.org/wiki/Software_2fDBusBindings"
depends=('dbus>=1.10.16-3' 'glib2>=2.50.0' 'libffi>=3.2.1-2')
groups=('base')
archs=('x86_64')
options=('scriptlet')
up2date="lynx -dump http://dbus.freedesktop.org/releases/dbus-glib/|Flasttar"
source=(http://dbus.freedesktop.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('5c851f3d457b46d5fa7f1e647d1141592d38cc53')
Fconfopts="	--sysconfdir=/etc \
                --localstatedir=/var \
                --exec-prefix=/ \
                --disable-ansi \
                --disable-asserts \
                --disable-tests \
                --enable-bash-completion \
                --enable-static=no \
                --disable-static"
F32confopts="	--libdir=/usr/lib32"
Finclude cross32

subpkgs=("lib32-${pkgname}")
subdescs=("$pkgdesc ( 32bit )")
subdepends=("lib32-libdbus lib32-glib2 lib32-expat")
subgroups=('lib32-extra')
subarchs=('x86_64')
suboptions=('force')

build()
{

	Fcd
	## 32bit
	Fcross32_common_build
	Frm usr/share
	Fcross32_delete_empty
	Fsplit "${subpkgs[0]}" /\*

	## 64bit
	Fcd
	Fbuild --libdir=/usr/lib --bindir=/usr/bin --libexecdir=/usr/lib/$pkgname
	Fln ../usr/bin/dbus-binding-tool /bin/dbus-binding-tool
}


# optimization OK
