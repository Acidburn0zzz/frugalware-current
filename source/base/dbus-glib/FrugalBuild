# Compiling time: 0.24 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=dbus-glib
pkgver=0.106
pkgrel=1
pkgdesc="Glib bindings for DBUS"
url="http://www.freedesktop.org/wiki/Software_2fDBusBindings"
depends=('dbus>=1.10.6-3' 'glib2>=2.46.2-4' 'libffi>=3.2.1')
groups=('base')
archs=('i686' 'x86_64' 'arm')
options=('scriptlet')
up2date="lynx -dump http://dbus.freedesktop.org/releases/dbus-glib/|Flasttar"
source=(http://dbus.freedesktop.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('660f1c1d511eb72384c10df37118bdc0f65dd927')

build()
{

	Fbuild \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--exec-prefix=/ \
		--libdir=/usr/lib \
		--libexecdir=/usr/lib/$pkgname \
		--bindir=/usr/bin \
		--disable-doxygen-docs \
		--disable-xml-docs \
		--disable-ansi \
		--disable-asserts \
		--disable-tests \
		--with-xml=libxml \
		--enable-bash-completion \
		--enable-static=no \
		--disable-static

	Fln ../usr/bin/dbus-binding-tool /bin/dbus-binding-tool
}


# optimization OK
