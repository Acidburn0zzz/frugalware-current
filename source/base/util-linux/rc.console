# chkconfig: 2345 00 98
# description: Screen blanks after n minutes idle time.

source /lib/initscripts/functions

actions=(start)

rc_start()
{
	if [ -e /etc/sysconfig/console ] ; then
		source /etc/sysconfig/console
		setterm -blank $idle
	fi
}

rc_exec $1

