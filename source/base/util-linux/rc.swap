. /etc/rc.d/rc.functions

# chkconfig: - 00 96
# description: Turn on/off swap.

if [ "$1" = "stop" ]; then
	if [ "$2" = 0 -o "$2" = 6 ]; then
		start "$stopswap"
		/sbin/swapoff -a
		ok $?
	fi
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startswap"
	/sbin/swapon -a
	ok $?
fi
