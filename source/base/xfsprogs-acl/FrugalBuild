pkgname=xfsprogs-acl
pkgver=2.2.34
pkgrel=1
pkgdesc="Dynamic library for access control list support."
url="http://oss.sgi.com/projects/xfs/"
depends=('xfsprogs-attr')
groups=('base')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump ftp://oss.sgi.com/projects/xfs/cmd_tars/|grep -m1 'acl_'|sed 's/.*_\(.*\).t.*/\1/'"
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/acl_${pkgver}.tar.gz)
sha1sums=('b24a6a7386212af5ee0c3bd6a181f372170f4d6a')

build()
{
	Fcd acl-$pkgver
	Fmake
	Fmkdir /usr/sbin
	Fmakeinstall install-lib
	Fmakeinstall install-dev
	# Fixing broken links
	Fln /usr/lib/libacl.so /usr/libexec/libacl.so
	Fln /usr/libexec/libacl.a /usr/lib/libacl.a
	Fln /usr/libexec/libacl.la /usr/lib/libacl.la
}

# optimization OK
