pkgname=xfsprogs-acl
pkgver=2.2.39_1
pkgrel=1
pkgdesc="Dynamic library for access control list support."
url="http://oss.sgi.com/projects/xfs/"
depends=('xfsprogs-attr>=2.4.32_1')
groups=('base')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump ftp://oss.sgi.com/projects/xfs/cmd_tars/|grep -m1 'acl_'|sed 's/.*_\(.*\).t.*/\1/' | sed 's/-/_/'"
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/acl_`echo ${pkgver} | sed -e 's/_/-/g'`.tar.gz)
sha1sums=('596cfa3461e93d5ad402ba2c4f6e8f1d4118a635')

build() {
	Fcd acl-2.2.39
	Fmake --enable-lib64=no
	Fmkdir /usr/sbin
	Fmakeinstall install-lib
	Fmakeinstall install-dev
	# Fixing broken links
	Fln /usr/lib/libacl.so /usr/libexec/libacl.so
	Fln /usr/libexec/libacl.a /usr/lib/libacl.a
	Fln /usr/libexec/libacl.la /usr/lib/libacl.la
}

# optimization OK
