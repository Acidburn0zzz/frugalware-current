pkgname=xfsprogs-acl
pkgver=2.2.31
pkgrel=1
pkgdesc="Dynamic library for access control list support."
url="http://oss.sgi.com/projects/xfs/"
depends=('xfsprogs-attr')
groups=('base')
archs=('i686' 'x86_64')
#up2date="wget --passive-ftp -O - -q ftp://oss.sgi.com/projects/xfs/latest/cmd_tars/MD5SUMS|grep acl|cut -d ' ' -f 3|sed 's/.src.tar.gz//'|cut -d - -f 2"
up2date="lynx -dump ftp://oss.sgi.com/projects/xfs/cmd_tars/|grep acl-.*gz$|sed 's/.*-\(.*\)\.s.*/\1/'"
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/acl-$pkgver.src.tar.gz)
sha1sums=('f73d87e7210b4ccb3ad34fb0b51e4eab1df63628')

build()
{
	Fcd acl-$pkgver
	Fmake || return 1
	Fmkdir /usr/sbin
	Fmakeinstall install-lib
}

# optimalization OK

