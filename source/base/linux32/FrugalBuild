# Last Modified: Fri, 03 Jun 2005 12:35:12 +0000
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=linux32
pkgver=1.0
pkgrel=1
pkgdesc="A small tool for the 32bit emulation in linux/x86-64."
url="ftp://ftp.x86-64.org/pub/linux-x86_64/tools/linux32/"
depends=('glibc')
groups=('base')
archs=('x86_64')
up2date=$pkgver
source=($url/{$pkgname.c,$pkgname.1,README})
md5sums=('8915c8bfac0308e9e64f5131715a9b1e' 'f4bfebd94dd9daa445189e396b041738' \
	'1d3244b4ca5113e9cfd1b0cf0119cf58')

build()
{
	gcc $CFLAGS -o linux32 linux32.c
	Fexerel /usr/bin/linux32
	Fln linux32 /usr/bin/linux64
	Ffilerel /usr/man/man1/linux32.1
	Fln linux32.1.gz /usr/man/man1/linux64.1.gz
}

# vim: ft=sh
