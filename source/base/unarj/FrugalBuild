pkgname=unarj
pkgver=2.63a
pkgrel=1
pkgdesc="extract, test and view ARJ archives"
url="http://www.ibiblio.org/pub/Linux/utils/compress/"
up2date=`lynx -dump 'http://www.ibiblio.org/pub/Linux/utils/compress/?M=D' |grep unarj|grep tar.gz|sed -n '1 p'|tr -s ' ' |cut -d ' ' -f 4|sed 's/.tar.gz//'|cut -d - -f 2`
source=(http://www.ibiblio.org/pub/Linux/utils/compress/$pkgname-$pkgver.tar.gz)
depends=()
md5sums=('a83d139c245f911f22cb1b611ec9768f')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  mkdir -p $startdir/pkg/usr/bin
  make || return 1
  make INSTALLDIR=$startdir/pkg/usr/bin install
}
