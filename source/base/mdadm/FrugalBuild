# Last Modified: Mon, 24 Oct 2005 00:06:46 +0200
# Compiling Time: 0.06 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=mdadm
pkgver=2.1
pkgrel=2
pkgdesc="A tool for managing software RAID under Linux"
url="http://www.kernel.org/pub/linux/utils/raid/mdadm/"
depends=('glibc')
makedepends=('groff')
groups=('base')
archs=('i686' 'x86_64')
backup=('etc/mdadm.conf')
up2date="lynx -dump 'http://www.kernel.org/pub/linux/utils/raid/mdadm/?C=M;O=D'|grep mdadm-[0-9\.]*tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.bz2 raidconfig $pkgname-$pkgver-cflags.diff \
	mdadm rc.mdadm)
sha1sums=('2d25d0cba472ff973b308a5ca4d454253f2c09b7' \
	  'd8160d2be4f262480df389fb8990679605027a5b' \
	  'cca5ab3e9d3f59d28d06bc4f53fbae2e60549d15' \
	  '66c02e7212047d89c99991ec13173a8ebb246aec' \
	  '677997f5f700b4af41efa4bac2fbfd8fdcae0467')

build()
{
	Fbuild
	Fexe /var/lib/frugalware/system/raidconfig
	Ffile ../messages/raidconfig.* /var/lib/frugalware/messages/
	Fmkdir /sbin
	Fln ../var/lib/frugalware/system/raidconfig /sbin/raidconfig
	Ffile /etc/sysconfig/mdadm
	Frcd
}

# optimalization ok

