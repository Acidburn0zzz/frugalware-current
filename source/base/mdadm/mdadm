#
# /etc/sysconfig/mdadm
#
# confiugation file for the mdadm software raid monitoring daemon
#

# devices to monitor
devices=('/dev/md0')

# give a delay in seconds. mdadm polls the md arrays and then waits this many
# seconds before polling again
delay='1800'

# give a mail address to send alerts to
mail='root@localhost'

