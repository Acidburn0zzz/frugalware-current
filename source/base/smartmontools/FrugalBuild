pkgname=smartmontools
pkgver=5.33
pkgrel=2
pkgdesc="For monitoring S.M.A.R.T. disks and devices"
url="http://smartmontools.sourceforge.net/"
depends=('bash')
groups=('base')
archs=('i686')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=64297' |grep ^smartmontools -3|tail -n 1|tr -s ' '|cut -d ' ' -f 5"
source=(http://dl.sf.net/$pkgname/$pkgname-$pkgver.tar.gz rc.smartd)
md5sums=('53f6861a916169a88a9edb1848e27dd0' '5a10bb3112c0ce9bea9da053df74367e')

build()
{
	Fbuild --sysconfdir=/etc || return 1
	Frm /etc/rc.d/init.d
	Frcd smartd
}

# optinalization ok

