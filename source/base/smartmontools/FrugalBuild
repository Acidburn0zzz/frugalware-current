pkgname=smartmontools
pkgver=5.33
pkgrel=2
pkgdesc="For monitoring S.M.A.R.T. disks and devices"
url="http://smartmontools.sourceforge.net/"
depends=('bash')
groups=('base')
archs=('i686' 'x86_64' 'ppc')
Finclude sourceforge
source=(http://dl.sf.net/$pkgname/$pkgname-$pkgver.tar.gz rc.smartd)
sha1sums=('dd1478402843278ba3778ccb1b6ab629a23e3abe' \
	  '1c0830ea58ccdbe5d2d713c92cf1da79066d045e')

build()
{
	Fbuild
	Frm /etc/rc.d
	Frcd smartd
}

# optimalization OK
