pkgname=chkconfig
pkgver=1.2.24h
pkgrel=5
pkgdesc="Updates and queries runlevel information for system services"
url="http://www.fastcoder.net/~thumper/software/sysadmin/chkconfig/"
depends=('glibc' 'popt')
groups=('base' 'core')
archs=('i686' 'x86_64')
up2date="lynx -dump http://freshmeat.net/projects/chkconfig/|grep -1 Version|sed -n 's/.*]\(.*\) [0-9].*/\1/;$ p'"
source=(http://www.fastcoder.net/~thumper/downloads/chkconfig/$pkgname-$pkgver.tar.gz)
md5sums=('032eae68329d07d0844775486ac74668')

build()
{
	Fbuild --with-init-dir=/etc/rc.d || return 1
	Fmkdir /etc/rc.d/rc{S,0,1,2,3,4,5,6}.d
}

