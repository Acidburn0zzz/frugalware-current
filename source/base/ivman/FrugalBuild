pkgname=ivman
pkgver=0.6.4
pkgrel=1
pkgdesc="A daemon to automount removable medias"
url="http://ivman.sourceforge.net/"
backup=('etc/ivman/IvmConfigActions.xml' \
	'etc/ivman/IvmConfigConditions.xml' \
	'etc/ivman/IvmConfigProperties.xml')
depends=('libxml2' 'hal' 'pmount')
groups=('base')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump 'http://prdownloads.sourceforge.net/ivman/?sort_by=date&sort=desc'|grep .tar.bz2$|sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2 \
	00-$pkgname-0.6.4-config.patch \
	$pkgname.install \
	rc.$pkgname)
sha1sums=('84548e5a58f475ef15e4e8c50d194639f01bc5bc' \
	'3464fa05034781cc137aa5fa61db047c9a7a5a93' \
	'1f0bc76b45f174861315dda43b026a01e001805c' \
	'fc5b8d2d5965c0bb4ac295e246ce28bb07534323')

build()
{
	Fbuild --sysconfdir=/etc
	Frcd
}

# optimalization OK

