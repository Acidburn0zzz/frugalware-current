# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=vixn
pkgver=0.5.2
pkgrel=1
pkgdesc="vixn is a Linux/Unix programmers' text editor."
Finclude rox
rodepends=('rox-lib' 'pygtksourceview' 'dbus-python')
url="http://www.vixn.org"
up2date="Flasttar http://download.tuxfamily.org/vixn"
groups=(${groups[@]} 'rox-apps')
archs=('i686' 'x86_64')
source=(http://download.tuxfamily.org/vixn/$pkgname-$pkgver.tar.bz2)
sha1sums=('57438be53fc42ee0edc55099580c58e09ab753ce')

build() {
    Fbuild_rox
    # fix symbolic links
    Fln docs /usr/share/Apps/$pkgname/Help
    Fln /usr/share/Apps/$pkgname/docs /usr/share/doc/$pkgname-$pkgver
    Fln ../ChangeLog /usr/share/Apps/$pkgname/docs/ChangeLog
    Fln ../../config/menus /usr/share/Apps/$pkgname/docs/html/menus.txt
}

# optimization OK
