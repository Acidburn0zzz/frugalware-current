# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=reticker
pkgver=0.4.5
pkgrel=1
pkgdesc="ROX Applet which acts as a newsticker."
_F_rox_name=RETicker
_F_rox_subdir=Applets/
Finclude rox
rodepends=('rox-lib')
groups=(${groups[@]} 'rox-applets')
_F_archive_name=$_F_rox_name
up2date="Flasttar ftp://ftp.berlios.de/pub/rox4debian/apps"
source=(ftp://ftp.berlios.de/pub/rox4debian/apps/$_F_rox_name-$pkgver.tgz)
archs=('i686')
sha1sums=('798c2d444c03f70820ba3881993af18e1b50ca11')

build()
{
	Fbuild_rox
	# fix execution permissions
	chmod +x $Fdestdir$_F_rox_installpath/start.py || Fdie
}
