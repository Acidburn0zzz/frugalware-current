# Compiling Time: 0 SBU
# Maintainer: Tuxbubling <tuxbubling@tiscali.fr>

pkgname=rox-mime-editor
realname=`echo $pkgname | cut -d - -f 2,3`
pkgver=0.5
pkgrel=1
pkgdesc="Editor for the Shared MIME Database."
url="http://rox.sourceforge.net/phpwiki/index.php/MIME-Editor"
rodepends=('rox-lib' 'shared-mime-info')
groups=('rox-extra')
archs=('i686')
up2date="lynx -dump http://rox.sourceforge.net/phpwiki/index.php/MIME-Editor | grep mime-editor- | sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/rox/$realname-$pkgver.tgz)
sha1sums=('1b17ef98f6aeda328db83a4ffd0fcbc481959696')
Finclude rox
replaces=('mime-editor')

build()
{
	Fcd $realname-$pkgver
	Fmkdir usr/share/{Apps,doc}
	Fcpr $realname-$pkgver/MIME-Editor /usr/share/Apps/MIME-Editor
	Fln /usr/share/Apps/MIME-Editor/AppRun /usr/bin/$pkgname
	Fmv usr/share/Apps/MIME-Editor/Help /usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/doc/$pkgname-$pkgver/ usr/share/Apps/MIME-Editor/Help
}

# optimalization OK - noarch

# vim: ft=sh
