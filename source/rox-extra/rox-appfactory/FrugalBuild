pkgname=rox-appfactory
pkgver=2.1.5
pkgrel=1
pkgdesc="This program automates the creation of ROX wrappers for non-ROX programs."
url="http://www.kerofin.demon.co.uk/rox/appfactory.html"
license="GPL2"
up2date="lynx -dump $url|grep 'AppFactory [0-9\.]\+[0-9]'|tail -n 1|cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/AppFactory-$pkgver.tar.gz)
sha1sums=('85bb4dce9c554737092c7fd667e60ee9f5e777ab')
groups=('rox-extra')
archs=('i686')
depends=('rox-clib' 'gtk+2')
replaces=('appfactory')

build()
{
	Fcd "AppFactory"
	./AppRun --compile || Fdie
	Fsed '/usr/apps' '/usr/share/Apps' libdir
	Fmkdir /usr/share/{Apps,doc}
	Fcpr AppFactory /usr/share/Apps/AppFactory
	Frm /usr/share/Apps/AppFactory/{.cvsignore,src}
	Fln /usr/share/Apps/AppFactory/Help /usr/share/doc/$pkgname-$pkgver
}

# optimalization ok - i686

