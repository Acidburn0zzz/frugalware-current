pkgname=silver-xcursors-3d
pkgver=0.4
pkgrel=1
pkgdesc="animated cursors for X rendered in Silver"
url="http://www.kde-look.org/content/show.php?content=5533"
depends=('x')
install=$pkgname.install
up2date=`lynx -dump 'http://www.kde-look.org/content/show.php?content=5533'|grep Version|sed -n -e 's/.*: \(.*\)$/\1/' -e '1 p'`
source=(http://www.kde-look.org/content/files/5533-Silver-XCursors-3D-$pkgver.tar.bz2)
md5sums=('c6093c8af520421c302d029e9deb53af')

build() {
  cd $startdir/src/Silver-XCursors-3D-$pkgver
  mkdir -p $startdir/pkg/usr/X11/lib/X11/icons
  mv Silver $startdir/pkg/usr/X11/lib/X11/icons/
}
