pkgname=util-macros
pkgver=1.19.1
pkgrel=1
pkgdesc="X.Org autotools utility macros"
groups=('x11' 'xorg-core' 'xorg-util')
archs=('i686' 'x86_64')
depends=()
Finclude xorg
sha1sums=('386e993ba339e561aa6d93073a4dcbab24e30bad')

build() {

	Fcd
	Fsed '$(datadir)/pkgconfig' '/usr/lib/pkgconfig' Makefile.{am,in}
	Fbuild
}
