pkgname=font-screen-cyrillic
pkgver=1.0.0
pkgrel=1
pkgdesc="X.Org Screen Cyrillic Fontset"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-fonts')
archs=('i686' 'x86_64')
depends=('mkfontscale' 'mkfontdir')
makedepends=('pkgconfig' 'bdftopcf')
Finclude xorg
source=(${source[@]} mkfontscale-fix.patch)
install=$pkgname.install

build() {
	Fcd
	Fpatchall
	autoreconf || return 1
	Fmake
	Fmakeinstall
}

# optimalization OK

# vim: ft=sh
sha1sums=('f6e02e5f8edc7a40051dc08739929bc8ac75e7d3' \
	  '84d377ebafea8d3df2d9076119f1f669bdc1b860')
