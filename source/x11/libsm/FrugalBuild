pkgname=libsm
realname=libSM
pkgver=1.0.0
pkgrel=1
pkgdesc="X.Org SM library"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-libs')
archs=('i686' 'x86_64')
depends=('xproto' 'xtrans' 'libice')
makedepends=('pkgconfig')
Finclude xorg

build() {
	Fcd libSM-$pkgver
	Fmake --enable-IPv6
	Fmakeinstall
}

# optimalization OK

