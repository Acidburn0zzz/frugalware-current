pkgname=xkbcomp
pkgver=1.0.1
pkgrel=1
pkgdesc="X.Org xkbcomp application"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-apps')
archs=('i686' 'x86_64')
depends=('libx11' 'libxkbfile')
Finclude xorg

build() {
	Fbuild
	Fmkdir /usr/share/X11/xkb
	Fln ../../../bin/xkbcomp /usr/share/X11/xkb/xkbcomp
}

# optimalization OK

