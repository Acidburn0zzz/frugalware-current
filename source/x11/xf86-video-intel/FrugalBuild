# Compiling Time: 3.39 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

USE_DEVEL=${USE_DEVEL:-"y"}

pkgname=xf86-video-intel
pkgver=2.99.917
Fuse $USE_DEVEL && pkgver=2.99.917.g47cd7fd
pkgrel=1
pkgdesc="X.Org driver for Intel cards (opensource)"
groups=('x11' 'xorg-core' 'xorg-drivers')
archs=('i686' 'x86_64')
depends=('xorg-server>=1.18.3' 'libxvmc>=1.0.9-2' 'xcb-util>=0.4.0-2')
replaces=('xf86-video-i810')
conflicts=('xf86-video-i810')
provides=('xf86-video-i810')
options=('force')
Finclude xorg

if Fuse $USE_DEVEL; then
	unset source sha1sums
	_F_scm_type="git"
	_F_scm_url="git://anongit.freedesktop.org/xorg/driver/xf86-video-intel"
	Finclude scm
fi

Fconfopts+="--enable-xvmc"

build()
{
	if Fuse $USE_DEVEL; then
		Funpack_scm
	fi
	Fbuild
}

# optimization OK
