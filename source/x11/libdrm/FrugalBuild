# Compiling Time: 0.05 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=libdrm
pkgver=2.4.11
pkgrel=1
pkgdesc="X.Org Userspace interface to kernel DRM services"
url="http://xorg.freedesktop.org/"
depends=()
archs=('i686' 'x86_64' 'ppc')
groups=('x11' 'xorg-core' 'xorg-libs')
up2date="lynx -dump 'http://dri.freedesktop.org/libdrm/?C=M;O=A'|Flasttar"
source=(http://dri.freedesktop.org/libdrm/libdrm-$pkgver.tar.gz no-pthread-stubs.patch)
sha1sums=('3b24b3b2d7dd35ab16abc06ce80e9c86c59979ed' \
          '3b4eb996e56d883bed0f2875e0ea758833f6c94e')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fconf --enable-nouveau-experimental-api
	Fmake
	Fmakeinstall
}
# optimization OK
