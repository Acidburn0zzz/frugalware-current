pkgname=libdrm
pkgver=2.0
pkgrel=1
pkgdesc="X.Org libdrm library"
url="http://xorg.freedesktop.org/"
depends=()
archs=('i686' 'x86_64')
groups=('x11' 'xorg-core' 'xorg-libs')
dlurl="http://xorg.freedesktop.org/releases/X11R7.0/src/extras/"
up2date="lynx -dump $dlurl | grep ]$pkgname|sed -n -e 's/.*$pkgname-\(.*\)\.tar\.gz.*/\1/' -e '1 p'"
source=($dlurl/$pkgname-$pkgver.tar.gz)
sha1sums=('679d4b74b93a429bfd28ab4a01b0c80ffdc9ab1c')

