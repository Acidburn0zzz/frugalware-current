pkgname=libdrm
pkgver=2.4.67
pkgrel=1
pkgdesc="X.Org Userspace interface to kernel DRM services"
url="http://xorg.freedesktop.org/"
depends=('libpciaccess>=0.13.4-2')
makedepends=('x11-protos>=0.1-2')
archs=('i686' 'x86_64' 'arm')
groups=('x11' 'xorg-core' 'xorg-libs')
up2date="Flasttar http://dri.freedesktop.org/libdrm/"
source=("http://dri.freedesktop.org/libdrm/$pkgname-$pkgver.tar.bz2")
sha1sums=('21d43437219ddd1e409fb4b7d77254cd129e8075')


build()
{

	Fbuild \
		--enable-libkms \
		--enable-udev \
		--enable-intel \
		--enable-nouveau \
		--enable-radeon \
		--enable-vmwgfx \
		--enable-install-test-programs
}

# optimization OK
