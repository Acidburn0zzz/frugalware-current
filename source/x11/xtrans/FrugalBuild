pkgname=xtrans
pkgver=1.0.0
pkgrel=2
pkgdesc="X.Org xtrans library"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-libs')
archs=('i686' 'x86_64')
depends=()
makedepends=('pkgconfig')
Finclude xorg
source=($source http://xorg.freedesktop.org/releases/X11R7.1/patches/xtrans-1.0.0-setuid.diff)

build()
{
	Fsed Xtranslcl.c xtrans/Xtranslcl.c $Fsrcdir/xtrans-1.0.0-setuid.diff
	Fbuild
}

# optimization OK

sha1sums=('1dc950ff1e0598433aa88e77553f93d56337fe3d' \
	  '82b913fe5ec96fd55afb8356ae338b90ed0f179b')
