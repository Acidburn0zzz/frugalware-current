# Last Modified: Mon, 31 Jan 2005 13:13:45 +0100
# Compiling Time: ~6 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=fvwm
pkgver=2.4.19
pkgrel=3
pkgdesc="An ICCCM-compliant multiple virtual desktop window manager."
url="http://www.fvwm.org"
depends=('x' 'gtk+' 'imlib')
groups=('x11')
up2date="lynx -dump $url|grep Stable|sed 's/.*]\(.*\)/\1/'|tr -d ' '"
source=(ftp://ftp.fvwm.org/pub/$pkgname/version-2/$pkgname-$pkgver.tar.gz xinitrc.$pkgname $pkgname.desktop)
md5sums=('a2fd2c07061303883d6bf89eb2b259ff' '9e9515577984b52cb0290431d7182326'\
         '95278cc93a56c5a8c1d0ed2720499b9b')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --libexecdir=/usr/lib
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/etc/X11/{sessions,xinit}
	cp $startdir/src/$pkgname.desktop $startdir/pkg/etc/X11/sessions/
	install -D -m755 -o root -g root $startdir/src/xinitrc.$pkgname $startdir/pkg/etc/X11/xinit/xinitrc.$pkgname
}

# vim: ft=sh

md5sums=('a2fd2c07061303883d6bf89eb2b259ff' '9e9515577984b52cb0290431d7182326'\
         '95278cc93a56c5a8c1d0ed2720499b9b')
