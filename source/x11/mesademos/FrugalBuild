# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=mesademos
pkgver=6.4.1
pkgrel=1
pkgdesc="OpenGL demonstration and test programs."
url="http://mesa3d.sourceforge.net/"
depends=('mesa' 'libstdc++' 'glut')
groups=('x11' 'xorg-core' 'xorg-apps')
archs=('i686')
up2date="lynx -dump $url/news.html|grep stable|sed 's/.*a \(.*\) h.*/\1/;q'"
source=(http://dl.sourceforge.net/sourceforge/mesa3d/MesaDemos-$pkgver.tar.bz2 \
	$pkgname-$pkgver-makefile.diff)
sha1sums=('ae7a13ed55dfac9dde13464df0c4ac98ac6f7669' \
	  '0dced1ad2b8985e9545d94e0b66273b47da9c3f8')

build()
{
	cd Mesa-$pkgver/progs/xdemos
	Fpatchall
	make glxgears glxinfo glxdemo glxheads || return 1
	Fexerel glxgears glxinfo glxdemo glxheads /usr/bin
}

# vim: ft=sh

# optimalization OK
