# Old Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=mesademos
pkgver=6.5.1
pkgrel=1
pkgdesc="OpenGL demonstration and test programs."
url="http://mesa3d.sourceforge.net/"
depends=('mesa>=6.5.1' 'libstdc++' 'freeglut' 'libx11' 'libxmu' 'libxi' 'libdrm' 'libxvmc' 'libxxf86vm')
groups=('x11' 'xorg-core' 'xorg-apps')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download.html|grep release|sed 's/.*: //;q'"
source=(http://heanet.dl.sourceforge.net/sourceforge/mesa3d/MesaDemos-$pkgver.tar.bz2 \
	$pkgname-6.5.1-makefile.patch)
sha1sums=('6576410f51ff2c2bf68cec1dcb188ea26307bf56' \
	  '16d41d20137358f09b91d93989b62ae3e01c5993')

build() {
	cd Mesa-$pkgver
	Fpatchall
	cd progs/xdemos
	make glxgears glxinfo glxdemo glxheads || Fdie
	Fexerel glxgears glxinfo glxdemo glxheads /usr/bin
}

# optimization OK
