pkgname=mesademos
pkgver=6.4.2
pkgrel=1
pkgdesc="OpenGL demonstration and test programs."
url="http://mesa3d.sourceforge.net/"
depends=('mesa' 'libstdc++' 'freeglut')
groups=('x11' 'xorg-core' 'xorg-apps')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=3&package_id=2437'|grep 'MesaDemos-.*tar.bz2'|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=(http://dl.sourceforge.net/sourceforge/mesa3d/MesaDemos-$pkgver.tar.bz2 \
	$pkgname-6.4.1-makefile.diff)
sha1sums=('35b1ff78fc1bd1c303be754ad2ff4252ad6c0258' \
	  '0dced1ad2b8985e9545d94e0b66273b47da9c3f8')

build()
{
	cd Mesa-$pkgver/progs/xdemos
	Fpatchall
	make glxgears glxinfo glxdemo glxheads || Fdie
	Fexerel glxgears glxinfo glxdemo glxheads /usr/bin
}

# vim: ft=sh

# optimalization OK
