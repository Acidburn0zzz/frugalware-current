# Compiling Time: 0.03 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

USE_DEVEL=${USE_DEVEL:-"y"}

pkgname=xf86-input-evdev
pkgver=2.2.5
Fuse $USE_DEVEL && pkgver=2.2.29.4.g9bfd9e8a
Finclude xorg
makedepends=('inputproto' 'randrproto' 'util-macros')
_F_cd_path="$pkgname-$pkgver"
sha1sums=('2e185413dae1873450622c8b28a631e504d66f6b')

if Fuse $USE_DEVEL; then
	unset source sha1sums
	_F_scm_type="git"
	_F_scm_url="git://anongit.freedesktop.org/xorg/driver/xf86-input-evdev"
	Finclude scm
fi

build()
{
	if Fuse $USE_DEVEL; then
		Funpack_scm
	fi
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
}

# optimization OK
