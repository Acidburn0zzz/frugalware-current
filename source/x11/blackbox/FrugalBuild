# Last Modified: Thu, 16 Jun 2005 22:55:36 +0000
# Compiling Time: ~3 minutes
# Maintainer: zleho <zleho@index.hu>
# Contributor: VMiklos <vmiklos@frugalware.org>

pkgname=blackbox
realname=blackboxwm
pkgver=0.70.0
pkgrel=2
pkgdesc="A fast, light window manager without any annoying library dependencies"
url="http://blackboxwm.sourceforge.net"
depends=('x')
groups=('x11')
archs=('i686' 'x86_64')
backup=('usr/share/blackbox/menu')
up2date="lynx -dump http://sourceforge.net/projects/$realname|grep -1 Version|sed -n 's/.*x \([0-9\.]*\) .*/\1/;3 p'"
source=(http://dl.sourceforge.net/sourceforge/$realname/$pkgname-$pkgver.tar.gz xinitrc.$pkgname $pkgname.desktop menu)
md5sums=('033a92af3eecaa10bcb689e55a1ceadc' '0ebc90e58bc3a46fbce2370945e52556' \
	 '596d8b9ea4ddf8dece4e1d9ae8d6fc7e' 'd37dbd8580004b81d0bfd74b57daceda')
build() 
{
	Fbuild || return 1
	Fexe xinitrc.$pkgname /etc/X11/xinit/xinitrc.$pkgname
	Ffile $pkgname.desktop /etc/X11/sessions/$pkgname.desktop
	Ffile /usr/share/blackbox/menu
}

# optimalization ok

