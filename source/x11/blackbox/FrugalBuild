pkgname=blackbox
realname=blackboxwm
pkgver=0.70.0
pkgrel=3
pkgdesc="A fast, light window manager without any annoying library dependencies"
url="http://blackboxwm.sourceforge.net"
depends=('x')
groups=('x11')
archs=('i686' 'x86_64')
backup=('usr/share/blackbox/menu')
up2date="lynx -dump http://sourceforge.net/projects/$realname|grep -1 Version|sed -n 's/.*x \([0-9\.]*\) .*/\1/;3 p'"
source=(http://dl.sourceforge.net/sourceforge/$realname/$pkgname-$pkgver.tar.gz xinitrc.$pkgname $pkgname.desktop menu)
sha1sums=('f700efa5d284f97ba4c7aa27d1a3425cb26baf7b' \
          '6677c924eafaca5518c1a7ac095f7097637a1e80' \
          '9533bdd9b6765e49676ce8d5e8ad8ff74501ebe1' \
          'da1cdb8ecc3ba3e32bcd6ec52a2461684e7576d7')

build() 
{
	Fbuild --enable-nls
	Fexe /etc/X11/xinit/xinitrc.$pkgname
	Ffile /etc/X11/sessions/$pkgname.desktop
	Ffile /usr/share/blackbox/menu
}

# optimalization ok

