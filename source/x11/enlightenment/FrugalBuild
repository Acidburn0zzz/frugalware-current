pkgname=enlightenment
pkgver=0.16.7.1
pkgrel=1
pkgdesc="A fast, flexible, and very extensible Window Manager"
url="http://enlightenment.org/"
depends=('fnlib' 'esd' 'imlib2')
up2date=`lynx -dump http://sourceforge.net/projects/enlightenment|grep -1 Version|sed -n -e 's/.*t-\(.*\) [A-Z].*/\1/' -e '3 p'`
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('1439839c3023914a62f8254cc31085fc')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --enable-fsstd --enable-sound
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
