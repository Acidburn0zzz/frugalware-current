# Last Modified: Mon, 09 May 2005 00:26:17 +0200
# Compiling Time: ~2 minute
# Maintainer: Shrift <shrift@frugalware.org>

pkgname=eterm
pkgver=0.9.3
pkgrel=1
pkgdesc="Eterm is a color vt102 terminal emulator intended as a replacement for xterm."
url="http://eterm.org"
depends=('glibc' 'freetype2' 'x' 'imlib2' 'pcre' 'freetype1' 'libast' 'zlib' 'libtool')
groups=('x11')
up2date=" lynx -dump 'http://prdownloads.sourceforge.net/eterm/?sort_by=date&sort=desc'|grep Eterm-[0-9\.]*.tar.gz|sed -ne 's/.*m-\(.*\)\.t.*/\1/;1 p'"
source=(http://download.sourceforge.net/eterm/Eterm-$pkgver.tar.gz)
md5sums=('dd089fa7768f945341d721dd4942c702')

build() {
cd $startdir/src/Eterm-$pkgver
./configure --prefix=/usr --with-imlib --enable-trans --with-x --enable-multi-charset --with-backspace=auto 
make || return 1
make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
