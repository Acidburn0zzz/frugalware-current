# Last Modified: Thu, 22 Jun 2006 20:32:45 +0200
# Compiling Time: 0.03 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=xinit
pkgver=1.0.2
pkgrel=2
pkgdesc="X.Org xinit application"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-apps')
archs=('i686' 'x86_64')
depends=('xterm' 'libx11' 'twm' 'xclock')
makedepends=('inputproto')
Finclude xorg
source=($source http://xorg.freedesktop.org/releases//X11R7.1/patches/xinit-1.0.2-setuid.diff)

build() {
	Fsed 'xinit.c' 'xinit/xinit.c' $Fsrcdir/xinit-1.0.2-setuid.diff
	Fbuild
	Fmv /usr/lib/X11/xinit/xinitrc /usr/lib/X11/xinit/xinitrc.twm
	chmod +x $Fdestdir/usr/lib/X11/xinit/xinitrc.twm
}

# optimization OK

sha1sums=('78a2fefebbe75a65682373fa22721c8789f55580' \
	  '816fa2fea8dbc1479ed594dace6281538de5e0ad')
