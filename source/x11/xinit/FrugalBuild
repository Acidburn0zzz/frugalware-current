pkgname=xinit
pkgver=1.0.3
pkgrel=1
pkgdesc="X Window System initializer"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-apps')
archs=('i686' 'x86_64')
depends=('xterm>=222' 'libx11>=1.0.99.1' 'twm>=1.0.2' 'xclock')
makedepends=('inputproto')
Finclude xorg
sha1sums=('caab4f9b56fc76edd8500d596d46cf1a9794caff')

build() {
	Fbuild
	Fmv /usr/lib/X11/xinit/xinitrc /usr/lib/X11/xinit/xinitrc.twm
	chmod +x $Fdestdir/usr/lib/X11/xinit/xinitrc.twm
}

# optimization OK
