pkgname=libx11
realname=libX11
rname=libX11
pkgver=1.0.1
pkgrel=1
pkgdesc="X.Org X11 library"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-libs')
archs=('i686' 'x86_64')
depends=('xproto' 'libxdmcp' 'xtrans' 'kbproto' 'libxau')
makedepends=('pkgconfig' 'xf86bigfontproto' 'bigreqsproto' 'xextproto' 'xcmiscproto' 'inputproto' 'util-macros')
Finclude xorg
sha1sums=('af207d7eaa59c08d2e9bd8313ebc906b203c26d5')

build() {
	Fcd $rname-$pkgver
	Fmake --enable-ipv6 --enable-xlocaledir --enable-xlocale
	Fmakeinstall
}

# optimization OK
