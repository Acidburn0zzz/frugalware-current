post_install()
{
	echo -n "updating fonts cache..."
	mkfontscale /usr/lib/X11/fonts/TTF
	mkfontdir /usr/lib/X11/fonts/TTF
	ttmkfdir -d /usr/lib/X11/fonts/TTF/
	/usr/bin/fc-cache --force --system-only --really-force
	echo "done."
}

post_upgrade()
{
	post_install $1
}


post_remove()
{
	post_install $1
}

op=$1
shift

$op $*

