# Last Modified: Mon, 20 Mar 2006 17:03:18 +0100
# Compiling Time: 0.01 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=dejavu-ttf
pkgver=2.4
pkgrel=1
pkgdesc="DejaVu fonts"
url="http://dejavu.sourceforge.net/wiki/index.php/Main_Page"
depends=('mkfontscale' 'mkfontdir' 'fontconfig' 'ttmkfdir')
groups=('x11' 'xorg-core' 'xorg-fonts')
archs=('i686' 'x86_64')
up2date="lynx -dump http://dejavu.sourceforge.net/wiki/index.php/Download|grep -m1 'dejavu'|sed 's/.*ttf-\(.*\).tar.gz (.*).*/\1/'"
source=(http://belnet.dl.sourceforge.net/sourceforge/dejavu/$pkgname-$pkgver.tar.gz)
sha1sums=('e105e5267ca882c37301c11775ee460f7ec678d1')

build()
{
	Fcd $pkgname-2.4
	Fmkdir /usr/lib/X11/fonts/TTF
	Ffilerel *.ttf /usr/lib/X11/fonts/TTF
}

# vim: ft=sh

# optimalization OK
