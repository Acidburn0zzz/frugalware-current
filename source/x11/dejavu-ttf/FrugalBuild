pkgname=dejavu-ttf
pkgver=2.13
pkgrel=1
pkgdesc="DejaVu fonts"
_F_sourceforge_dirname="dejavu"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
depends=('mkfontscale' 'mkfontdir' 'fontconfig>=2.4.0' 'ttmkfdir')
groups=('x11' 'xorg-core' 'xorg-fonts')
archs=('i686' 'x86_64')
sha1sums=('49a05c21a28983ea960ba35e6ff6a6c11c5bf071')

build()
{
	Fcd
	Fmkdir /usr/lib/X11/fonts/TTF
	Ffilerel *.ttf /usr/lib/X11/fonts/TTF
}

