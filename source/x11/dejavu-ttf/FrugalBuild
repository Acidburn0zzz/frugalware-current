# Compiling Time: 0.01 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=dejavu-ttf
pkgver=2.3_1
pkgrel=1
pkgdesc="DejaVu fonts"
url="http://dejavu.sourceforge.net/wiki/index.php/Main_Page"
depends=('mkfontscale' 'mkfontdir' 'fontconfig' 'ttmkfdir')
groups=('x11' 'xorg-core' 'xorg-fonts')
archs=('i686' 'x86_64')
up2date="lynx -dump http://dejavu.sourceforge.net/wiki/index.php/Download|grep -m1 'dejavu'|sed 's/.*ttf-\(.*\).tar.gz (.*).*/\1/'|sed 's|-|_|g'"
source=(http://belnet.dl.sourceforge.net/sourceforge/dejavu/$pkgname-2.3-1.tar.gz)
sha1sums=('fa355f0c1a2d6f8cff8452218bab0b796363b167')

build()
{
	Fcd $pkgname-2.3
	Fmkdir /usr/lib/X11/fonts/TTF
	Ffilerel *.ttf /usr/lib/X11/fonts/TTF
}

# vim: ft=sh

# optimalization OK
