pkgname=libxcursor
realname=libXcursor
pkgver=1.1.5.2
pkgrel=1
pkgdesc="X.Org Xcursor library"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-libs')
archs=('i686' 'x86_64')
depends=('libx11' 'libxfixes' 'libxrender')
makedepends=('pkgconfig' 'xproto')
Finclude xorg

build() {
	Fcd libXcursor-$pkgver
	Fmake
	Fmakeinstall
}

# optimalization OK

