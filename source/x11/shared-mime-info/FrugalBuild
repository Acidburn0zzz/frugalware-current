pkgname=shared-mime-info
pkgver=0.16
pkgrel=3
pkgdesc="Freedesktop.org Shared MIME Info"
url="http://freedesktop.org/Software/shared-mime-info"
depends=('libxml2' 'glib2')
makedepends=('perl-xml')
groups=('x11')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep -m 1 \"$pkgname-[0-9\.]\+.tar.gz\" | grep -o '[0-9\.]\+.tar.gz' | sed 's|.tar.gz||'"
source=(http://freedesktop.org/~jrb/$pkgname-$pkgver.tar.gz)
sha1sums=('77ef95614a726504d5bafb12e1a973c790724b91')
install=$pkgname.install

