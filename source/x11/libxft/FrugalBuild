pkgname=libxft
realname=libXft
pkgver=2.1.9
pkgrel=1
pkgdesc="X.Org Xft library"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-libs')
archs=('i686' 'x86_64')
depends=('libx11' 'libxext' 'libxrender' 'freetype2' 'fontconfig')
makedepends=('pkgconfig' 'xproto')
Finclude xorg
sha1sums=('c393fc693f186880f290e569a4fe13f1765356d3')

build() {
	Fcd libXft-$pkgver
	Fmake
	Fmakeinstall
}

