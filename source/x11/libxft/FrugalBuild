pkgname=libxft
realname=libXft
pkgver=2.1.8.2
pkgrel=1
pkgdesc="X.Org Xft library"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-libs')
archs=('i686' 'x86_64')
depends=('libx11' 'libxext' 'libxrender' 'freetype2' 'fontconfig')
makedepends=('pkgconfig' 'xproto')
Finclude xorg

build() {
	Fcd libXft-$pkgver
	Fmake
	Fmakeinstall
}

# optimalization OK

