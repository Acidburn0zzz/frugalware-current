# Last Modified: Fri, 10 Jun 2005 14:44:41 +0000
# Compiling Time: ~10 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=xscreensaver
pkgver=4.21
pkgrel=2
pkgdesc="A screen saver and locker for the X Window System."
url="http://www.jwz.org/xscreensaver"
depends=('freetype2' 'libglade' 'gtk+2' 'libxml2' 'expat')
makedepends=('bc')
groups=('x11')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download.html |grep ]$pkgname|sed -ne 's/.*r-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.gz $pkgname-$pkgver-head.diff)
md5sums=('3ea7d0bc9b7159523855296e175d7ac7' 'b988f062e251da3e3162693ada2424aa')

build()
{
	Fcd
	Fpatchall || return 1
	Fmake --with-shadow --with-jpeg --with-gl --without-pam || return 1
	make install_prefix=$Fdestdir install
	# conflicts with pacman :)
	Fmv /usr/man/man1/pacman.1 /usr/man/man1/$pkgname-pacman.1
       	Fmv /usr/man/man1/barcode.1 /usr/man/man1/$pkgname-barcode.1
}

# vim: ft=sh
