pkgname=icewm
pkgver=1.2.16
pkgrel=1
pkgdesc="A window manager, whose goal is speed and simplicity."
url="http://www.icewm.org/"
depends=('x' 'imlib' 'libpng' 'libjpeg' 'libungif' 'zlib' 'libtiff')
up2date=`lynx -dump $url|grep released|sed -ne 's/.*]\([0-9\.]*\).*/\1/' -e '1 p'`
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('1aa92846cc516a2ac1d668d80c3ca5ea')

build() {
cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc \
		--enable-shaped-decorations --enable-gradients --with-imlib
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install-base install-docs
}

# vim: ft=sh
