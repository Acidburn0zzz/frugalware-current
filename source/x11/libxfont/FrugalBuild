pkgname=libxfont
realname=libXfont
pkgver=1.2.0
pkgrel=2
pkgdesc="X.Org Xfont library"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-libs')
archs=('i686' 'x86_64')
depends=('xtrans' 'libfontenc' 'xproto' 'fontsproto' 'freetype2')
makedepends=('pkgconfig' 'fontcacheproto')
Finclude xorg
source=(${source[@]} SA21450-xorg-7535.patch)

build() {
	Fcd libXfont-$pkgver
	Fbuild --enable-IPv6 --enable-type1 --enable-speedo --enable-freetype \
		--enable-pcfformat --enable-bdfformat --enable-snfformat --enable-cid
}

# optimization OK
sha1sums=('c17aa459c105a9aa57a88c8d4e2c4bee85e99d99' \
	  '35c8d3685e971f0e439356298f740631f7e13fc3')
