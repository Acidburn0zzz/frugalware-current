pkgname=wqy-bitmapfont-pcf
origname=wqy-bitmapfont
pkgver=0.7.0_4
pkgrel=2
pkgdesc="WenQuanYi Bitmap Song CJK font"
url="http://sourceforge.net/projects/wqy"
depends=('xorg-server')
groups=('x11' 'xorg-core' 'xorg-fonts')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=128192&package_id=156288'|grep -m1 '$pkgname.*.tar.gz'|sed 's/.*f-\(.*\).tar.gz .*/\1/' | sed 's/-/_/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/wqy/$pkgname-`echo $pkgver | sed 's/_/-/'`.tar.gz)
sha1sums=('10dbba2cd8e167d37d2d8f16ac63073498fd965f')

build() {
	Fcd $origname
	Fmkdir /usr/lib/X11/fonts/75dpi
	cp -a $Fsrcdir/$origname/*.pcf $Fdestdir/usr/lib/X11/fonts/75dpi || Fdie
}
