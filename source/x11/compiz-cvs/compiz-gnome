#!/bin/bash
#
# Start compiz within gnome-session
#

if [ -x "/usr/bin/compiz" ]; then
	if [ -e "/etc/sysconfig/compiz" ]; then
		source /etc/sysconfig/compiz
		if [ "$ENABLE_COMPIZ" == "1" ]; then
			if [ `ps -A | grep Xgl | wc -l` == "1" ]; then
				LD_LIBRARY_PATH="/usr/lib/mesa-cvs/lib/" compiz --replace gconf &
				gnome-window-decorator &
			fi
		fi
	fi
fi
