# Last Modified: Thu, 03 Feb 2005 13:53:53 +0100
# Compiling Time: ~3 minute
# Maintainer: Shrift <shrift@frugalware.org>

pkgname=idesk
pkgver=0.7.1
pkgrel=1
pkgdesc="You can use icons on your desktop with Idesk"
url="http://idesk.sourceforge.net"
depends=('librsvg' 'expat' 'libart_lgpl' 'pango' 'libxml2' 'imlib')
groups=('x11')
#conflicts=('withnothing')
up2date=`lynx -dump 'http://prdownloads.sourceforge.net/idesk/?sort_by=date&sort=desc'|grep tar.gz$|sed -ne 's/.*k-\(.*\)\.t.*/\1/;1 p'`
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('b78fd6a1dba16ae0c29d0c3b7b3c2f1c')

build()
{
	Fcd
	for i in config.guess config.sub depcomp install-sh ltmain.sh missing \
		mkinstalldirs
	do
		rm $i && ln -s /usr/share/automake-1.9/$i ./
	done
	
	Fmake
	
        Fexe $pkgname-$pkgver/src/$pkgname /usr/bin/$pkgname
}

# vim: ft=sh
