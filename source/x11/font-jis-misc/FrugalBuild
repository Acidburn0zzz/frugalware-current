# Compiling Time: 0.22 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=font-jis-misc
pkgver=1.0.0
pkgrel=1
pkgdesc="X.Org JIS Misc Fontset"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-fonts')
archs=('i686' 'x86_64')
depends=('mkfontscale' 'mkfontdir')
makedepends=('pkgconfig' 'bdftopcf')
_F_xorg_nr=0
Finclude xorg
source=(${source[@]} mkfontscale-fix.patch)
install=$pkgname.install

build() {
	Fcd
	Fpatchall
	autoreconf || return 1
	Fmake
	Fmakeinstall
}

# optimization OK


sha1sums=('45c5034b5eb255ccdb0f2bb96bb0b0b9376cca4e' \
	  '84d377ebafea8d3df2d9076119f1f669bdc1b860')
