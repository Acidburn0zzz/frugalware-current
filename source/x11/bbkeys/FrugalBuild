pkgname=bbkeys
pkgver=0.8.6
pkgrel=1
pkgdesc="A completely configurable key-combo grabber for blackbox"
url="http://bbkeys.sourceforge.net"
depends=('x' 'perl')
up2date=`lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=33459&package_id=25542'|grep '] Release'|grep -v beta|sed -ne 's/.*s \([0-9\.]*\) \[.*/\1/' -e '1 p'`
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('6df58a99d136f21682b859b823d31b7d')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
