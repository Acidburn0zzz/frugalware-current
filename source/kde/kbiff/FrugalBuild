pkgname=kbiff
pkgver=3.7.1
pkgrel=1
pkgdesc="New mail notification utility for KDE"
url="http://www.granroth.org/kbiff/"
depends=('qt' 'x' 'gamin' 'fontconfig' 'expat' 'kdelibs' 'libart_lgpl')
groups=('kde' 'kde-apps')
up2date=`lynx -dump http://www.granroth.org/kbiff/ |grep kbiff.*tar |sed -n -e 's/.*f-\(.*\).t.*/\1/'  -e '1 p'`
source=(http://belnet.dl.sourceforge.net/sourceforge/kbiff/$pkgname-$pkgver.tar.bz2)
md5sums=('eefba63ff4e6e9a1ff5fb32f46ba5291')

build() {
	mkdir -p $startdir/pkg/opt/kde/bin
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde
	make || return 1
	make prefix=$startdir/pkg/opt/kde install
}

# vim: ft=sh
