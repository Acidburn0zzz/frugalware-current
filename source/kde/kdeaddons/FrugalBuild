# Compiling Time: 4.24 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdeaddons
pkgver=3.5.5
pkgrel=1
pkgdesc="Additional plugins and scripts for some KDE applications."
groups=('kde')
archs=('i686' 'x86_64')
makedepends=('xmms')
depends=('kdemultimedia>=3.5.5' 'kdegames>=3.5.5' 'sdl' 'db>=4.5.20')
Finclude kde
sha1sums=('05c719cba9f3673d6995421ba4abdb08a05eb53f')

subpkgs=("$pkgname-docs")
subdescs=("Kdeaddons Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
	Fbuild --with-sdl \
		--without-debug --disable-debug \
		--enable-gcc-hidden-visibility --enable-final \
		--with-gnu-ld --disable-dependency-tracking
	Fsplit $pkgname-docs usr/share/doc
}	

# optimization OK
