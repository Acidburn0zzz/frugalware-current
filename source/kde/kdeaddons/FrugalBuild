# Last Modified: Fri, 18 Mar 2005 14:40:15 +0100
# Compiling Time: ~50 minutes
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdeaddons
pkgver=3.4.0
pkgrel=1
pkgdesc="Additional plugins and scripts for some KDE applications."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.0/src"
groups=('kde' 'kde-core')
archs=('i686')
makedepends=('xmms' 'sdl')
depends=('kdemultimedia=3.4.0')
up2date="lynx -dump http://www.kde.org/download/ |grep kdeaddons|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('5a0d82ee1bbaeec8dab74b2e5e604f94')

build() {
	cd $startdir/src/$pkgname-$pkgver
	#patch -p1 <$startdir/src/$pkgname-$pkgver-gcc34.diff
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh
