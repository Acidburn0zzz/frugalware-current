# Last Modified: Fri, 29 Jul 2005 22:06:57 +0200
# Compiling Time: ~7.37 SBU
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdeaddons
pkgver=3.4.2
pkgrel=1
pkgdesc="Additional plugins and scripts for some KDE applications."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.2/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
makedepends=('xmms' 'sdl')
depends=('kdemultimedia=3.4.2')
up2date="lynx -dump http://www.kde.org/download/ |grep kdeaddons|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('af4fc7fa0dde8894b9d9582ecef7df2a')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh

# optimalization OK
