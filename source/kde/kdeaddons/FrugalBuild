# Maintainer: crazy <malagarax@gmx.net>

pkgname=kdeaddons
pkgver=3.5.0
pkgrel=1
kdever=3.5
pkgdesc="Additional plugins and scripts for some KDE applications."
url="http://www.kde.org"
pkgurl="ftp://ftp.solnet.ch/mirror/KDE/stable/$kdever/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
makedepends=('xmms')
depends=('kdemultimedia=3.5.0' 'kdebase=3.5.0' 'sdl')
up2date=$pkgver
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('c3ccd6d54f46c8164480a17956e11033908d03ff')

build() 
{

	Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
               --disable-debug \
               --disable-dependency-tracking \
               --with-gnu-ld \
               --enable-new-ldflags \
               --with-sdl \
               DO_NOT_COMPILE="doc"
                
}

# vim: ft=sh

# optimalization OK
