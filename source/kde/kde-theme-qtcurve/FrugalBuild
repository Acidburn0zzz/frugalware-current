# Compiling time: 0.21 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kde-theme-qtcurve
pkgver=0.69.0
pkgrel=1
pkgdesc="KDE QtCurve Theme"
depends=('kdebase-workspace>=4.3.1')
makedepends=('gtk+2>=2.16-2-2' 'freetype2' 'automoc4')
groups=('kde')
archs=('i686' 'x86_64')
_F_kde_id2="40492"
options=('force')
_F_cmakekde_final=OFF
Finclude kde
source=(http://home.freeuk.com/cpdrummond/{QtCurve-KDE4,QtCurve-Gtk2}-$pkgver.tar.bz2)
up2date="lynx -dump 'http://www.kde-look.org/content/show.php?content=40492'|grep  'Source (KDE 4.*)'|sed 's/.* - \(.*\).*)/\1/'"

subpkgs=('qtcurve-gtk2')
subconflicts=('qtcurve-gtk')
subreplaces=('qtcurve-gtk')
subdescs=('GTK2 QtCurve Theme.')
suboptions=('force')
subdepends=('libstdc++ gtk+2>=2.16.2-2')
subgroups=('xapps')
subarchs=('i686 x86_64')


sha1sums=('03a92de75bdefb94cf49f88175bbaeda6b429fb4' \
          '2201f50687cb64e669fcc7044c508dcfb80d57d7')

build()
{

	Fcd QtCurve-Gtk2-$pkgver
	_F_cmake_confopts "-DLIBINSTALL_DIR=/usr/lib \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_COLOR_MAKEFILE=Off \
		-DCMAKE_VERBOSE_MAKEFILE=On \
		-DQTC_ADD_EVENT_FILTER=false \
		-DQTC_MODIFY_MOZILLA=false \
		-DQTC_MODIFY_MOZILLA_USER_JS=false \
		-DQTC_NEW_MOZILLA=true"
	CMake_build
	Fsplit qtcurve-gtk2 /usr

   	cd $Fsrcdir/QtCurve-KDE4-$pkgver || Fdie
	_F_cmake_confopts "-DLIBINSTALL_DIR=/usr/lib \
                -DCMAKE_INSTALL_PREFIX=/usr \
                -DCMAKE_BUILD_TYPE=None \
                -DCMAKE_COLOR_MAKEFILE=Off \
                -DCMAKE_VERBOSE_MAKEFILE=On"
	CMake_build
}

# optimization OK
