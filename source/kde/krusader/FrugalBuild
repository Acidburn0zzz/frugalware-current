pkgname=krusader
pkgver=1.60.1
pkgrel=1
pkgdesc="Twin Panel File Manager For Your Desktop"
url="http://krusader.sourceforge.net"
depends=('kdebindings>=3.2.0')
groups=('kde' 'kde-apps')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/down.php|grep version|sed -n 's/.*n \(.*\)/\1/;2 p'"
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-diskusage_cpp-fix.patch0 \
	$pkgname-$pkgver-gcc4.diff)
sha1sums=('e2ea231c14724cbe6b5ebc1860d71a142496e058' \
	  'b9ba57d52689d0dcbe9badf9b951f65af0749db4' \
	  'c12f9beba45c1b84d30c70c1478bc251a6338c94')

build()
{
	Fbuild
	Fmv $Fdestdir/usr/share/apps/krusader/krusaderui.rc \
		/usr/share/apps/krusader/
	Frm `echo $Fdestdir|sed 's|^/\([^/]*/\).*|\1|'`
}

# optimalization ok

