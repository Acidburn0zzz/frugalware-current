# Last Modified: Mon, 11 Apr 2005 20:00:34 +0200
# Compiling Time: ~1 hour on factory.frugalware.org
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=krusader
pkgver=1.60.0
pkgrel=1
pkgdesc="Twin Panel File Manager For Your Desktop"
url="http://krusader.sourceforge.net"
depends=('kdebindings>=3.2.0')
groups=('kde' 'kde-apps')
archs=('i686')
up2date="lynx -dump $url/down.php|grep version|sed -n 's/.*n \(.*\)/\1/;2 p'"
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz \
	$pkgname-$pkgver-diskusage_cpp-fix.patch0)
md5sums=('95f7900799bbd2810e6ac06fbf628536' 'ed70bb16511cf2b438f4d96f86934ad6')

build()
{
	Fbuild || return 1
	Fmv $startdir/pkg/usr/share/apps/krusader/krusaderui.rc \
		/usr/share/apps/krusader/
	Frm `echo $startdir|sed 's|^/\([^/]*/\).*|\1|'`
}

# optimalization ok

