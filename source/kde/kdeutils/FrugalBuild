pkgname=kdeutils
pkgver=3.5.5
pkgrel=1
pkgdesc="KDE General Utilities."
groups=('kde')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.5' 'python' 'gmp' 'libxtst')
makedepends=('gnupg' 'doxygen')
conflicts=('superkaramba')
Finclude kde
sha1sums=('9f81cf7987e23b12861635cfeb69dc46f87f050f')

build() 
{
     Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
		--disable-dependency-tracking \
		--disable-debug --without-debug \
		--with-gnu-ld --enable-gcc-hidden-visibility \
		--without-xmms
	chmod 6755 $Fdestdir/usr/bin/klaptop_acpi_helper
}

# optimization OK
