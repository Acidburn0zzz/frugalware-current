# Compiling Time: ~22 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=kdeartwork
pkgver=3.3.1
pkgrel=1
pkgdesc="Additional artwork for KDE."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.3.1/src"
groups=('kde')
depends=('kdebase=3.3.1')
up2date=`lynx -dump http://www.kde.org/download/ |grep kdeartwork|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('b983255aabdc6aadb2b9f66145d5ecfb')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh
