# Last Modified: Thu, 13 Oct 2005 21:12:51 +0200
# Compiling Time: ~1.41 SBU
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdeartwork
pkgver=3.4.3
pkgrel=1
pkgdesc="Additional artwork for KDE."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.3/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase=3.4.3')
up2date="lynx -dump http://www.kde.org/download/ |grep kdeartwork|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('c4cda9abc2d07bdfc9a3039d2720b7fa7b9cdc12')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh

# optimalization OK
