pkgname=libkipi
pkgver=0.1.1
pkgrel=1
pkgdesc="Library for kipi-plugins"
url="http://digikam.sourceforge.net"
depends=('kdelibs' 'qt')
groups=('kde')
source=(http://download.sourceforge.net/digikam/$pkgname-$pkgver.tar.bz2)
up2date=`lynx -dump "http://sourceforge.net/project/showfiles.php?group_id=42641" | grep libkipi-.*.tar.bz2 | sed -n "s/.*libkipi-\(.*\).tar.bz2.*/\1/; 1 p"`

build() {
	Fprefix=/opt/kde
	Fbuild
}

md5sums=('395d87ad36b1261f58bdeac87145734c')
