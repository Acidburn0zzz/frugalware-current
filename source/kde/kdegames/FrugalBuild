# Last Modified: Fri, 14 Oct 2005 10:05:34 +0200
# Compiling Time: ~5.80 SBU
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdegames
pkgver=3.4.3
pkgrel=1
pkgdesc="Games for KDE."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.3/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase=3.4.3')
up2date="lynx -dump http://www.kde.org/download/ |grep kdegames|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('cebe74902d1332b270d821d0998addbf65522af1')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh

# optimalization OK
