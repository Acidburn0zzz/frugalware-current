# Last Modified: Sun, 19 Jun 2005 17:29:30 +0000
# Compiling Time: ~1,3 hours
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdeedu
pkgver=3.4.1
pkgrel=1
url="http://www.kde.org"
pkgdesc="Educational programs for KDE."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.1/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase=3.4.1')
up2date="lynx -dump http://www.kde.org/download/ |grep kdeedu|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('9fa1db1cf500c0fc594b0f5d291bbf69')

build() {
	cd $startdir/src/$pkgname-$pkgver
	aclocal && autoconf
	./configure --prefix=/usr --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
	rm -rf $startdir/pkg/bin
}

# vim: ft=sh
