pkgname=kdeedu
pkgver=3.5.0
pkgrel=1
kdever=3.5
url="http://www.kde.org"
pkgdesc="Educational programs for KDE."
pkgurl="ftp://ftp.solnet.ch/mirror/KDE/stable/$kdever/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase=3.5.0')
makedepends=('python' 'facile')
up2date=$pkgver
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('8708afafae3d482ced966a6a2ea7fa6dcfede3b0')

build()
{
	
	Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
               --disable-debug \
               --disable-dependecy-tracking\
               --enable-new-ld-flags \
               --with-gnu-ld \
               DO_NOT_COMPILE="doc" 
}

