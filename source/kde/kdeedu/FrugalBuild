# Last Modified: Fri, 18 Mar 2005 12:01:18 +0100
# Compiling Time: ~1,3 hours
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdeedu
pkgver=3.4.0
pkgrel=1
url="http://www.kde.org"
pkgdesc="Educational programs for KDE."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.0/src"
groups=('kde' 'kde-core')
depends=('kdebase=3.4.0')
up2date=`lynx -dump http://www.kde.org/download/ |grep kdeedu|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('c2aab0c4f6439abb6c0eb09413b6532c')

build() {
	cd $startdir/src/$pkgname-$pkgver
	aclocal && autoconf
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
	rm -rf $startdir/pkg/bin
}

# vim: ft=sh
