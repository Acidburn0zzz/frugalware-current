# Last Modified: Fri, 29 Jul 2005 13:50:32 +0200
# Compiling Time: ~9.53 SBU
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdeedu
pkgver=3.4.2
pkgrel=1
url="http://www.kde.org"
pkgdesc="Educational programs for KDE."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.2/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase=3.4.2')
up2date="lynx -dump http://www.kde.org/download/ |grep kdeedu|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('e2c5cc083868dd4c35c1b50e04eb40eb')

build() {
	cd $startdir/src/$pkgname-$pkgver
	aclocal && autoconf
	./configure --prefix=/usr --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
	rm -rf $startdir/pkg/bin
}

# vim: ft=sh

# optimalization OK
