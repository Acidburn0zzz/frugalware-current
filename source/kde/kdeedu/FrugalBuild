pkgname=kdeedu
pkgver=3.3.1
pkgrel=1
url="http://www.kde.org"
pkgdesc="Educational programs for KDE."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.3.1/src"
groups=('kde')
depends=('kdebase=3.3.1')
up2date=`lynx -dump http://www.kde.org/download/ |grep kdeedu|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('757e51db2b7c6cf831b59ef7f1304a2c')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
	rm -rf $startdir/pkg/bin
}

# vim: ft=sh
