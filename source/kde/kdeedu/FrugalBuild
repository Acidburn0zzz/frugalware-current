pkgname=kdeedu
pkgver=3.4.2
pkgrel=2
url="http://www.kde.org"
pkgdesc="Educational programs for KDE."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.2/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase=3.4.2')
up2date="lynx -dump http://www.kde.org/download/ |grep kdeedu|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2 \
	post-3.4.2-kdeedu.patch0)
sha1sums=('ac204edb196d2ec28de2ded3c2cbf560f2a70174' \
	  '7bb460a41841a8af53d98505c614cbac7f22e531')

build()
{
	Fpatchall
	aclocal && autoconf
	Fmake --disable-debug
	Fmakeinstall
	Frm /bin
}

