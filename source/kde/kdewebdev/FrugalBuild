# Last Modified: Fri, 29 Jul 2005 22:44:21 +0200
# Compiling Time: ~6.16 SBU
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdewebdev
pkgver=3.4.2
pkgrel=1
pkgdesc="A web development tool for the K Desktop Environment."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.2/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdelibs=3.4.2')
replaces=('quanta')
up2date="lynx -dump http://www.kde.org/download/ |grep kdewebdev|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('99dbd9bf9b2a1451544b35f73efe7dba')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh

# optimalization OK
