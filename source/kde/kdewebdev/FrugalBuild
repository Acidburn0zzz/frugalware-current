# Last Modified: Fri, 18 Mar 2005 15:10:37 +0100
# Compiling Time: ~1 hour
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdewebdev
pkgver=3.4.0
pkgrel=1
pkgdesc="A web development tool for the K Desktop Environment."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.0/src"
groups=('kde' 'kde-core')
depends=('kdelibs=3.4.0')
replaces=('quanta')
up2date=`lynx -dump http://www.kde.org/download/ |grep kdewebdev|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('a131b9a14c5da402417b43ed8bc61df1')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

