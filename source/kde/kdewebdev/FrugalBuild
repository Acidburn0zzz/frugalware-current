# Last Modified: Tue, 21 Jun 2005 13:43:08 +0000
# Compiling Time: ~1 hour
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdewebdev
pkgver=3.4.1
pkgrel=1
pkgdesc="A web development tool for the K Desktop Environment."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.1/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdelibs=3.4.1')
replaces=('quanta')
up2date="lynx -dump http://www.kde.org/download/ |grep kdewebdev|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('d5c9e5c72731aead950ab29a4d620af8')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

