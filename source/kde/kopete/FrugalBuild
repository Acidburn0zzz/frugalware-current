pkgname=kopete
pkgver=0.12.1
pkgrel=1
pkgdesc="Kopete is a multi-protocol instant messenger, written for the KDE desktop."
url="http://kopete.kde.org/"
depends=('kdenetwork>=3.5.3-2' 'libxscrnsaver' 'xmms' 'ortp=0.7.1' 'perl-io-socket-ssl' 'qca-tls' \
	'gnutls' 'ilbc' 'speex' 'libidn' 'meanwhile')
makedepends=('qt-docs' 'doxygen')
groups=('kde' 'kde-apps')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge kdeapps
sha1sums=('874ff9cbf2a684b0fe2933da58b735a1a12718cc')

build()
{
	Fcd
	Fsed 'ilbc_found="no"' 'ilbc_found="yes"'  kopete/protocols/jabber/jingle/configure.in.in
	Fbuild --without-debug --disable-debug \
	       --with-speex  \
		--enable-jingle \
		--disable-meanwhile \
		--disable-final \
		--disable-warnings \
		--enable-gcc-hidden-visibility \
		--disable-dependency-tracking \
		--enable-new-ldflags \
		--with-gnu-ld
		## meanwhile ## broken
}

# optimization OK
