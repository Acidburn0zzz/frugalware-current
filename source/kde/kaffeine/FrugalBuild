pkgname=kaffeine
pkgver=0.8.1
pkgrel=2
pkgdesc="Kaffeine is full featured Media Player for KDE3."
url="http://kaffeine.sourceforge.net/"
depends=('kdebase>=3.5.3' 'xine-lib' 'popt' 'libxml2' 'lame' 'cdparanoia')
groups=('kde' 'kde-apps')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('b593fdc3afeee71eb60c2ac5b9c6e41057f5d12a')

build()
{
        Fbuild  --disable-debug --without-debug --with-gnu-ld \
		--without-gstreamer --enable-gcc-hidden-visibility  
	Frm /usr/share/mimelnk/application/x-mplayer2.desktop
}

# optimization OK
