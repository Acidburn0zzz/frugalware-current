pkgname=kdenetwork
pkgver=3.3.1
pkgrel=1
pkgdesc="KDE Networking Programs."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.3.1/src"
url="http://www.kde.org"
groups=('kde')
depends=('kdebase=3.3.1')
up2date=`lynx -dump http://www.kde.org/download/ |grep kdenetwork|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('4b35a9e23ef555b47e9423082856ca80')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

