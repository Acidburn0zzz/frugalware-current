pkgname=kdenetwork
pkgver=3.5.4
pkgrel=1
pkgdesc="KDE Networking Programs."
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('libxtst' 'kdebase>=3.5.4' 'ppp' 'wireless_tools' 'openslp' 'libidn')
makedepends=('qt-docs' 'doxygen')
Finclude kde
sha1sums=('35fb92f0c76346ca38a63f796d505487b15ba748')

subpkgs=("$pkgname-docs")
subdescs=("Kdenetwork Documentation")
subdepends=("$pkgname-$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')


build()
{
	Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                --disable-dependency-tracking \
                --disable-debug \
                --without-debug \
                --disable-warnings \
 		--enable-new-ldflags \
		DO_NOT_COMPILE="kopete" \
		--enable-gcc-hidden-visibility \
		--with-gnu-ld \
		--enable-final
	Fsplit $pkgname-docs usr/share/doc
}


# optimization OK
