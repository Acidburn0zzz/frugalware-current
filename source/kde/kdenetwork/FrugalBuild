pkgname=kdenetwork
pkgver=3.5.0
pkgrel=1
kdever=3.5
pkgdesc="KDE Networking Programs."
pkgurl="ftp://ftp.solnet.ch/mirror/KDE/stable/$kdever/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
archs=('i686')
depends=('kdebase=3.5.0' 'libidn' 'wireless_tools')
makedepends=('xmms' 'ppp')
up2date=$pkgver
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('38c7c021e324e2c3dd222dfc716a511e44d066c7')

build()
{

	Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
               --disable-debug \
               --disable-dependency-tracking \
               --enable-new-ldflags \
               --with-gnu-ld     
}

