# Last Modified: Fri, 18 Mar 2005 10:42:20 +0100
# Compiling Time: ~2 hours
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdenetwork
pkgver=3.4.0
pkgrel=1
pkgdesc="KDE Networking Programs."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.0/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
archs=('i686')
depends=('kdebase=3.4.0')
up2date="lynx -dump http://www.kde.org/download/ |grep kdenetwork|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('47a8d21ce486426caf56bf6129ce993f')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

