pkgname=kdevelop
pkgver=3.1.1
pkgrel=1
pkgdesc="The KDevelop integrated C/C++ application development environment"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.3/src"
url="http://www.kde.org"
groups=('kde')
depends=(kdebase=3.3.1)
up2date=`lynx -dump http://www.kde.org/download/ |grep kdevelop|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('93224b9552ae6e5ab5c0c7e13943f9d3')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

