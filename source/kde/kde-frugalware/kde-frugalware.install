post_install()
{
	if grep -q 'DesktopFile=/usr/share/applications/textdoc.desktop' /usr/share/config/kickerrc; then
	   sed 's|DesktopFile=/usr/share/applications/textdoc.desktop|DesktopFile=/usr/share/applications/writer.desktop|g' \
			-i /usr/share/config/kickerrc
	fi
}

post_upgrade()
{
	post_install
}

op=$1
shift

$op $*
