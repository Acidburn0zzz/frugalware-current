# Compiling Time: 0 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kde-frugalware
pkgver=1.2
pkgrel=1
pkgdesc="KDE artwork for Frugalware Linux."
url="http://ftp.frugalware.org/pub/other/kde/kde-frugalware/"
depends=()
backup=('usr/share/config/kdm/kdmrc')
rodepends=('sed' 'kde-theme-qtcurve' 'crystal' 'qtcurve-gtk2' 'gtk-qt-engine>=0.7-4' 'knemo>=0.4.6-3')
options=('nodocs')
groups=('kde' 'kde-minimal')
archs=('i686' 'x86_64' 'ppc')
up2date="$pkgver"
source=(http://ftp.frugalware.org/pub/other/artwork/$pkgname/$pkgname-$pkgver.tar.bz2 \
	ftp://ftp.frugalware.org/pub/other/artwork/wallpaper/1.2.jpg \
	ftp://ftp.frugalware.org/pub/other/artwork/wallpaper/1.2wide.jpg)

build()
{
	Fcd
	Fpatchall
	cp -Rad usr etc $Fdestdir
	Ffilerel ../1.2.jpg usr/share/wallpapers/frugalware.jpg
	Ffilerel ../1.2wide.jpg usr/share/wallpapers/frugalware_wide.jpg
	# Config files.
        Ffilerel config/* /etc/kde/config
	Fmkdir etc/kde/config/kdm
        #Fsed "oxygen-air" "frugalware" $Fdestdir/etc/kde/config/kdm/kdmrc
        #Fsed "default_blue.jpg" "frugalware.jpg" $Fdestdir/etc/kde/config/kdm/backgroundrc
}

sha1sums=('8d72f2a44435e0918d42d8131fd136fc042577fb' \
          'e6fa35443f42e418f3a4b915ffdc54cf5eb484ca' \
          'c78da9657e112b52a57ba17fd78a40be10ea0bb0')
