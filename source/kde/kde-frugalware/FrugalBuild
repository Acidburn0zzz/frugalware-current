# Compiling Time: 0 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kde-frugalware
pkgver=1.1.0
pkgrel=1
pkgdesc="KDE artwork for Frugalware Linux."
url="http://ftp.frugalware.org/pub/other/kde/kde-frugalware/"
depends=()
backup=('usr/share/config/kdm/kdmrc')
rodepends=('sed' 'kde-theme-qtcurve' 'crystal' 'qtcurve-gtk2' 'gtk-qt-engine>=0.7-4' 'nuvola>=1.0-3' 'knemo>=0.4.6-3')
options=('nodocs')
groups=('kde' 'kde-minimal')
archs=('i686' 'x86_64' 'ppc')
up2date="$pkgver"
source=(http://ftp.frugalware.org/pub/other/artwork/$pkgname/$pkgname-$pkgver.tar.bz2 \
	ftp://ftp.frugalware.org/pub/other/artwork/wallpaper/1.1.jpg \
	ftp://ftp.frugalware.org/pub/other/artwork/wallpaper/1.1wide.jpg)

build()
{
	Fcd
	Fpatchall
	cp -Rad usr etc $Fdestdir
	Ffilerel ../1.1.jpg usr/share/wallpapers/frugalware.jpg
	Ffilerel ../1.1wide.jpg usr/share/wallpapers/frugalware_wide.jpg
	# Config files.
        Ffilerel config/* /usr/share/config/
	Fmkdir usr/share/config/kdm
        Fmv usr/share/config/kdmrc usr/share/config/kdm/kdmrc
	Fmv usr/share/config/kdmrc.KDE-3.5.2.orig  usr/share/config/kdm/kdmrc.KDE-3.5.2.orig
        Fmv usr/share/config/backgroundrc  usr/share/config/kdm/backgroundrc

}

sha1sums=('370928515d2c6f68e5aa45a5a5eaeebc96ef0d31' \
          'e1c4ecb605aa4086288dc794f6287ea942e2b37f' \
          'cf02d183e3fbba0cfe28500d09cb0dd98ed30844')
