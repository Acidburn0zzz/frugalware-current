pkgname=kdepim
pkgver=3.4.2
pkgrel=1
pkgdesc="KDE PIM Utilities."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.2/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
archs=('i686')
depends=('kdebase=3.4.2')
makedepends=('pilot-link' 'gnokii')
up2date="lynx -dump http://www.kde.org/download/ |grep kdepim|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('e7bd012faa559bcf2a949b6a8ed5ff7f')

build() {
#	cd $startdir/src/$pkgname-$pkgver/kpilot
#	patch -p0 < $startdir/src/$pkgname-kpilot-fix.diff || return 1

	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

