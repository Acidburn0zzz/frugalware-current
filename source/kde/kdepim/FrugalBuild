# Last Modified: Thu, 24 Mar 2005 14:36:05 +0100
# Compiling Time: ~3,2 hours
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdepim
pkgver=3.4.0
pkgrel=2
pkgdesc="KDE PIM Utilities."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.0/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
archs=('i686')
depends=('kdebase=3.4.0')
makedepends=('pilot-link' 'gnokii')
up2date="lynx -dump http://www.kde.org/download/ |grep kdepim|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2 $pkgurl/$pkgname-fix-imap-resource-type.diff)
md5sums=('7f8cc9a40c0190c5a6723f6325bcba06' '61d8f774c18eea1ac0360543c43a16ff')

build() {
	cd $startdir/src/$pkgname-$pkgver/kresources/kolab
	patch -p0 < $startdir/src/$pkgname-fix-imap-resource-type.diff || return 1

	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

