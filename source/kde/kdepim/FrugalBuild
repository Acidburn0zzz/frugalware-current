# Compiling Time: 28.51 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdepim
pkgver=3.5.5
pkgrel=3
pkgdesc="KDE PIM Utilities."
groups=('kde')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.5-3' 'gpgme' 'openssl' 'libmal>=0.42-2' 'cyrus-sasl' 'gnokii')
makedepends=('doxygen' 'kdeaccessibility>=3.5.5' 'kdemultimedia>=3.5.5' 'qt-docs' 'graphviz')
Finclude kde
source=(${source[@]} \
	http://ftp.frugalware.org/pub/other/people/crazy/kdediffs/kdepim-br.patch \
	missing-nofinal.patch)
sha1sums=('612f34307c5fac9279c85a4efb1488db4b438f12' \
          '5a4b581819992bdefa794ba35918e35f6fcbc14c' \
          'f1247fe841ac470b3dfdc0a3a05d0871d4baaacf')

subpkgs=("$pkgname-docs")
subdescs=("Kdepim Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
	Fcd
	Fpatchall
	make -f admin/Makefile.common cvs || Fdie
	Fmake CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                --disable-dependency-tracking \
                --disable-debug \
                --without-debug \
                --disable-warnings \
                --with-gnu-ld \
                --enable-gcc-hidden-visibility \
                --disable-final \
		--with-gpg=/usr/bin/gpg
	Fmakeinstall
	echo "NoDisplay=true" >> $Fdestdir/usr/share/applications/kde/korganizer-import.desktop
	Fsplit $pkgname-docs usr/share/doc
}

# optimization OK

