pkgname=kdepim
pkgver=3.3.1
pkgrel=1
pkgdesc="KDE PIM Utilities."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.3.1/src"
url="http://www.kde.org"
groups=('kde')
depends=('kdebase=3.3.1')
makedepends=('pilot-link' 'gnokii')
up2date=`lynx -dump http://www.kde.org/download/ |grep kdepim|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('5aed63aed6b7c1ad9232cb30aa124a40')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

