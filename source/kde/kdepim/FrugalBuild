pkgname=kdepim
pkgver=3.5.0
pkgrel=1
kdever=3.5
pkgdesc="KDE PIM Utilities."
pkgurl="ftp://ftp.solnet.ch/mirror/KDE/stable/$kdever/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
archs=('i686')
depends=('kdebase=3.5.0' 'gpgme' 'openssl' 'libmal' 'cyrus-sasl' 'gnokii')
makedepends=('graphviz' 'kdeaccessibility=3.5.0' 'kdemultimedia=3.5.0')
up2date=$pkgver
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('fb98ea719990bf1169289ca5012ad75ac261f488')

build ()
{
         
        Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
               --disable-debug \
               --disable-dependency-tracking \
               --with-gnu-ld \
               --enable-new-ldflags \
               --with-gpg=/usr/bin/gpg \
               --enable-indexlib \
              DO_NOT_COMPILE="doc"
}
# vim: ft=sh

