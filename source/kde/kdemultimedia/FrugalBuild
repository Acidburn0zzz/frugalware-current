pkgname=kdemultimedia
pkgver=3.5.2
pkgrel=1
pkgdesc="KDE Multimedia Programs."
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('libxv' 'kdebase>=3.5.2' 'cdparanoia' 'lame' 'taglib' 'libtunepimp' 'xine-lib' 'akode' 'libxml2' 'esd' 'libxxf86dga')
options=('nodocs')
sha1sums=('68e5e24709a2c06777bb3f12fc76e733f5896c5d')
Finclude kde

build()
{
     Fbuild --enable-new-ldflags \
	--with-alsa \
	--with-lame \
	--with-esd \
	--with-cdparanoia \
	--with-akode \
	--with-audiofile \
	--with-musicbrainz \
	--with-theora \
	--with-flac \
	--with-xine \
        CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
        --disable-dependency-tracking \
        --disable-debug \
        --disable-warnings \
        --with-gnu-ld --enable-final
}

# optimalization OK
