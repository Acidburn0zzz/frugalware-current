# Contributor: crazy <crazy@pimpmylinux.org>

pkgname=kdemultimedia
pkgver=3.5.1
pkgrel=1
pkgdesc="KDE Multimedia Programs."
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('libxv' 'kdebase>=3.5.1' 'cdparanoia' 'lame' 'taglib' 'libtunepimp' 'xine-lib' 'akode' 'libxml2' 'esd' 'libxxf86dga')
options=('nodocs')
sha1sums=('ce75b5d6639fe26eac6d81858264ba9196d450ba')
Finclude kde

build()
{
     Fcd
     Fsed "linux/awe_voice.h" "/usr/include/linux/awe_voice.h" configure
     for i in `find . -iname configure`
       do
          Fsed '-O2' '' $i
     done
     Fbuild --enable-new-ldflags \
	--with-alsa \
	--with-lame \
	--with-esd \
	--with-cdparanoia \
	--with-akode \
	--with-audiofile \
	--with-musicbrainz \
	--with-theora \
	--with-flac \
	--with-xine \
        CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
        --disable-dependency-tracking \
        --disable-debug \
        --disable-warnings \
        --with-gnu-ld --enable-final
}

# optimalization OK
