pkgname=kdemultimedia
pkgver=3.5.4
pkgrel=1
pkgdesc="KDE Multimedia Programs."
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('libxv' 'kdebase>=3.5.4' 'cdparanoia' 'lame' 'speex' 'taglib' 'libtunepimp' 'xine-lib' 'akode' 'libxml2' 'esd' 'libxxf86dga')
Finclude kde
sha1sums=('a435563cc45fb8f26090471792956c03d50c51c2')

subpkgs=("$pkgname-docs")
subdescs=("Kdemultimedia Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
     Fbuild --enable-new-ldflags \
	--with-alsa \
	--with-esd \
	--with-speex \
	--with-akode \
	--with-audiofile \
	--with-musicbrainz \
	--with-theora \
	--with-flac \
	--with-xine \
        CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
        --disable-dependency-tracking \
        --disable-debug \
        --disable-warnings \
        --with-gnu-ld --enable-final
	Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
