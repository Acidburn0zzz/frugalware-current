pkgname=kdemultimedia
pkgver=3.5.3
pkgrel=1
pkgdesc="KDE Multimedia Programs."
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('libxv' 'kdebase>=3.5.3' 'cdparanoia' 'lame' 'taglib' 'libtunepimp' 'xine-lib' 'akode' 'libxml2' 'esd' 'libxxf86dga')
Finclude kde
sha1sums=('2a75ba49bbc513b4ab5cb0d039949984742f94f5')

build()
{
     Fbuild --enable-new-ldflags \
	--with-alsa \
	--with-lame \
	--with-esd \
	--with-cdparanoia \
	--with-akode \
	--with-audiofile \
	--with-musicbrainz \
	--with-theora \
	--with-flac \
	--with-xine \
        CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
        --disable-dependency-tracking \
        --disable-debug \
        --disable-warnings \
        --with-gnu-ld --enable-final
}

# optimization OK
