# Last Modified: Tue, 29 Nov 2005 19:23:24 +0100
# Compiling Time: 4.85 SBU 
# Maintainer: crazy <malagarax@gmx.net>

pkgname=kdemultimedia
pkgver=3.5.0
pkgrel=1
kdever=3.5
pkgdesc="KDE Multimedia Programs."
pkgurl="ftp://ftp.solnet.ch/mirror/KDE/stable/$kdever/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
archs=('i686')
depends=('kdebase=3.5.0' 'cdparanoia' 'lame' 'taglib' 'libtunepimp' 'xine-lib' 'akode' 'libxml2' 'esd')
makedepends=('gstreamer' 'gst-plugins')
up2date=$pkgver
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('0d64a4d748dee95d7f7dbc03eb4f538f8c0a133d')


build() 
{
	
	Fbuild  CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                --disable-dependency-tracking \
                --enable-new-ldflags \
                --with-gnu-ld \
                --disable-debug \
                --with-alsa \
                --with-lame \
                --with-esd \
                --with-cdparanoia \
                --with-akode \
                --with-audiofile \
                --with-musicbrainz \
                --with-theora \
                --with-flac \
                --with-xine \
                DO_NOT_COMPILE="doc" 
	
}

# vim: ft=sh
# optimalization OK
