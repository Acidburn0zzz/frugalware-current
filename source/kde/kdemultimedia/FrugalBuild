# Last Modified: Fri, 18 Mar 2005 09:49:19 +0100
# Compiling Time: ~2 hours
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdemultimedia
pkgver=3.4.0
pkgrel=1
pkgdesc="KDE Multimedia Programs."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.0/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
depends=('kdebase=3.4.0' 'cdparanoia' 'lame' 'flac' 'libmusicbrainz' 'taglib' \
         'trm' 'xine-lib')
up2date=`lynx -dump http://www.kde.org/download/ |grep kdemultimedia|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('4e42790bbea7c4ac0c436da3c7c664ac')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --enable-audio=alsa,oss,esd \
		--with-alsa --disable-debug --with-lame --with-vorbis \
		--with-esd --disable-dependency-tracking
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

