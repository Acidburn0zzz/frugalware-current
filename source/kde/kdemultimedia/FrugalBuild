# Compiling Time: 8.04 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdemultimedia
pkgver=3.5.5
pkgrel=1
pkgdesc="KDE Multimedia Programs."
groups=('kde')
archs=('i686' 'x86_64')
depends=('libxv' 'kdebase>=3.5.5' 'cdparanoia' 'lame' 'speex' 'taglib' 'libtunepimp' 'xine-lib' 'akode' 'libxml2' 'esd' 'libxxf86dga')
Finclude kde
sha1sums=('8ddc3174d400827e58e2e5cf87a5bd279a6bfdc1')

subpkgs=("$pkgname-docs")
subdescs=("Kdemultimedia Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
     Fbuild \
	--with-lame \
	--with-cdparanoia \
	--with-alsa \
	--with-esd \
	--with-speex \
	--with-akode \
	--with-audiofile \
	--with-musicbrainz \
	--with-theora \
	--with-flac \
	--with-xine \
        CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
        --disable-dependency-tracking \
        --disable-debug \
        --disable-warnings \
        --with-gnu-ld --enable-final
	Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
