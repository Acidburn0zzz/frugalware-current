pkgname=kdemultimedia
pkgver=3.4.2
pkgrel=1
pkgdesc="KDE Multimedia Programs."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.2/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase=3.4.2' 'cdparanoia' 'lame' 'flac' 'libmusicbrainz' 'taglib' \
         'trm' 'xine-lib' 'libsamplerate' 'libxml2' 'esd')
makedepends=('gstreamer')
up2date="lynx -dump http://www.kde.org/download/ |grep kdemultimedia|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
#source=($pkgurl/$pkgname-$pkgver.tar.bz2 kdemultimedia-3.4.0-amd64.patch0)
#md5sums=('7da7ba5fd676acfdf662113a4cdfe43c' 'b7a984a57c27e1e62a606d90d0c39437')
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('7da7ba5fd676acfdf662113a4cdfe43c')

build() {
	Fcd
	[ "$CARCH" == "x86_64" ] && (Fpatchall || return 1)
	Fmake --sysconfdir=/etc --enable-audio=alsa,oss,esd \
		--with-alsa --disable-debug --with-lame --with-vorbis \
		--with-esd --disable-dependency-tracking || return 1	
	Fmakeinstall || return 1
}

