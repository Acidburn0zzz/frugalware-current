# Compiling Time: 0.44 SBU
# Maintainer: Melko <melko@frugalware.org>

options+=('asneeded')

pkgname=kauth
pkgrel=2
pkgdesc="KAuth."
groups=('kde')
archs=('i686' 'x86_64')
_F_kde_project="frameworks"
Finclude kde
depends=("libqt5core>=$_F_kde_qtver" "kcoreaddons>=$_F_kde_ver" 'polkit-qt5-1')
makedepends=("${makedepends[@]}" 'extra-cmake-modules' 'libqt5imageformats' 'libqt5platformsupport' 'libqt5svg' 'qt5-linguist' 'libqt5test' 'libqt5x11extras' 'libqt5quick')
sha1sums=('3ba80e055f13e92191939f941468929165655856')

build() {
	Fcd
	Fsed "QUIET NO_MODULE" "NAMES PolkitQt5-1 QUIET NO_MODULE" cmake/FindPolkitQt-1.cmake
	CMake_build
}

# optimization OK
