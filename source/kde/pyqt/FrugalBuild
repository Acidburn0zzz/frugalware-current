# Last Modified: Fri, 31 Mar 2006 16:11:39 +0200
# Compiling Time: ~3.04 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=pyqt
origname=PyQt
pkgver=3.16
pkgrel=1
pkgdesc="PyQt is a set of Python bindings for the Qt toolkit."
url="http://www.riverbankcomputing.co.uk/pyqt/index.php"
# sip,qscintilla: see BTS-278
depends=('qt' 'sip' 'qscintilla')
up2date="lynx -dump http://www.riverbankcomputing.co.uk/pyqt/download.php |grep PyQt-x11 |sed -ne 's/.*l-\(.*\).t.*/\1/;1 p'"
source=(http://www.riverbankcomputing.com/Downloads/PyQt3/GPL/$origname-x11-gpl-$pkgver.tar.gz)
license="GPL"
groups=('kde')
archs=('i686' 'x86_64')
sha1sums=('3b44fbcd74d608f593064b2964a6b43812b3eaa4')
options=('scriptlet')

build() {
	Fcd $origname-x11-gpl-$pkgver
	Fsed "sipcfg.version_to_string" "sipconfig.version_to_string" configure.py
	echo "yes" | python configure.py || Fdie
	Fmake
	Fmakeinstall
}

# optimalization OK

