# Last Modified: Thu, 01 Sep 2005 00:54:46 +0200
# Compiling Time: ~3.04 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=pyqt
origname=PyQt
pkgver=3.15
pkgrel=1
pkgdesc="PyQt is a set of Python bindings for the Qt toolkit."
url="http://www.riverbankcomputing.co.uk/pyqt/index.php"
makedepends=('sip')
depends=('qt')
up2date="lynx -dump http://www.riverbankcomputing.co.uk/pyqt/download.php |grep PyQt-x11 |sed -ne 's/.*l-\(.*\).t.*/\1/;1 p'"
source=(http://www.river-bank.demon.co.uk/download/PyQt/$origname-x11-gpl-$pkgver.tar.gz)
sha1sums=('47c2729fb423dc19eb96255a1d0791c714b88754')
license="GPL"
groups=('kde')
archs=('i686' 'x86_64')

build() {
	Fcd $origname-x11-gpl-$pkgver
	Fsed "sipcfg.version_to_string" "sipconfig.version_to_string" configure.py
	echo "yes" | python configure.py || return 1
	Fmake || return 1
	Fmakeinstall || return 1
}

# optimalization OK

