pkgname=kdegraphics
pkgver=3.3.1
pkgrel=1
pkgdesc="KDE Graphics Programs"
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.3.1/src"
groups=('kde')
makedepends=('espgs' 'xpdf')
depends=('kdebase=3.3.1' 'imlib' 'glut' 'sane-backends' 'libgphoto2')
up2date=`lynx -dump http://www.kde.org/download/ |grep kdegraphics|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('18f063ec6fad27b304ae97cf4b480140')

build() {
	cd $startdir/src/$pkgname-$pkgver
	#patch -p1 <$startdir/src/$pkgname-$pkgver-gcc34.diff
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

