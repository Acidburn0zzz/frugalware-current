pkgname=kdegraphics
pkgver=3.4.2
pkgrel=2
pkgdesc="KDE Graphics Programs"
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.2/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
makedepends=('espgs' 'xpdf')
depends=('kdebase=3.4.2' 'imlib' 'glut' 'sane-backends' 'libgphoto2')
up2date="lynx -dump http://www.kde.org/download/ |grep kdegraphics|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2 kdegraphics-3.4.2-kgamma-xorgconfpath-fix.patch.gz \
	kdegraphics-3.4.2-diff-20050802.patch.gz kdegraphics-3.4.2-gcc4fix.patch.gz)
sha1sums=('e8822a49fca9adc604a08c5d192c7667e86e0840' \
          'fab34657948e241c10497b5460f4d9b83295ea7b' \
          '95a8adfc0ee5974c6bfee3a8f25ae9d2281a3a48' \
          'c2828fb8846de4b2e5ab72ea9639f35ebda15a6a')

build()
{
	Fcd
	Fpatch kdegraphics-3.4.2-kgamma-xorgconfpath-fix.patch.gz
	Fpatch kdegraphics-3.4.2-diff-20050802.patch.gz
	Fpatch kdegraphics-3.4.2-gcc4fix.patch.gz
	make -f admin/Makefile.common || return 1
	Fmake --disable-debug
	Fmakeinstall
}

