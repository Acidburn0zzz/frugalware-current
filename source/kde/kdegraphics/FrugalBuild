# Compiling Time: 3.84 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdegraphics
pkgver=3.5.5
pkgrel=2
pkgdesc="KDE Graphics Programs"
groups=('kde')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.5' 'imlib' 'freeglut' 'lcms' 'sane-backends' 't1lib' 'libgphoto2' \
	'fribidi' 'poppler-qt' 'xespgs' 'xpdf' 'urw-fonts' 'openexr>=1.4.0a')
makedepends=('doxygen' 'qt-docs')
rodepends=('ocrad')
Finclude kde
source=($source post-3.5.5-kdegraphics.diff)
sha1sums=('e063f9351e2781cc6a5d23834611fc7dc7dc4fbd' \
          'f48513bd60956c67aa877f52dd1daa25b41d43bb')


subpkgs=("$pkgname-docs")
subdescs=("Kdegraphics  Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
	Fbuild \
		--disable-warnings \
		--disable-kpdf-drm \
		--with-openexr \
		--with-gphoto2-libraries=/usr/lib \
		--with-gphoto2-includes=/usr/include/gphoto2 \
		--with-imlib-config=/usr/bin \
		--with-jpeg=/usr/lib \
		--with-tiff=/usr/lib \
		--with-poppler \
		--without-debug \
		--disable-debug \
		--with-gnu-ld \
		--enable-gcc-hidden-visibility \
		--disable-dependency-tracking
	Fsplit $pkgname-docs usr/share/doc
}
# optimization OK
