pkgname=kdegraphics
pkgver=3.4.3
pkgrel=1
pkgdesc="KDE Graphics Programs"
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.3/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
makedepends=('espgs' 'xpdf')
depends=('kdebase=3.4.3' 'imlib' 'glut' 'sane-backends' 'libgphoto2')
up2date="lynx -dump http://www.kde.org/download/ |grep kdegraphics|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('8782c5d8a1a5fd462e58060f924bec0df33b656d')

build()
{
	Fcd
	make -f admin/Makefile.common || return 1
	Fmake --disable-debug
	Fmakeinstall
}

