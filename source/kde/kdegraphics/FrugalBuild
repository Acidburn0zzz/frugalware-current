pkgname=kdegraphics
pkgver=3.5.2
pkgrel=1
pkgdesc="KDE Graphics Programs"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.2' 'imlib' 'freeglut' 'lcms' 'sane-backends' 't1lib' 'libgphoto2' 'fribidi' 'poppler-qt' 'xespgs' 'xpdf' 'urw-fonts')
makedepends=('doxygen')
options=('nodocs')
Finclude kde
sha1sums=('80703d46fd90b7ab95f92d7b7c411a04f431d13b')

Fconfopts="$Fconfopts --disable-warnings \
	--enable-new-ldflags \
	--with-openexr --disable-kpdf-drm \
	--with-gphoto2-libraries=/usr/lib \
	--with-gphoto2-includes=/usr/include/gphoto2 \
	--with-imlib-config=/usr/bin \
	--with-jpeg=/usr/lib \
	--with-tiff=/usr/lib \
	--with-poppler --without-debug --enable-new-ldflags"


