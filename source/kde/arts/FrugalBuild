# Last Modified: Wed Jun  1 14:53:59 CEST 2005
# Last Fodified: Thu  17 10:18:12 CEST 2005
# Compiling Time: ~17 minutes
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=arts
pkgver=1.4.1
kdever=3.4.1
pkgrel=1
pkgdesc="Analog realtime synthesizer"
url="http://www.arts-project.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/$kdever/src"
groups=('kde' 'kde-core')
archs=('i686')
makedepends=('esd')
depends=('audiofile' 'qt' 'libmad' 'libvorbis' 'glib2' 'alsa-lib')
up2date="lynx -dump http://www.kde.org/download/ |grep arts|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('f632984ddc976a1e4243718af54559ee')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-debug \
		--disable-dependency-tracking --with-alsa
	
	make LDFLAGS=-pthread || return 1

	make DESTDIR=$startdir/pkg install || return 1
}

