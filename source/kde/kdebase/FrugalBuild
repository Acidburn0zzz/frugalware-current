# Compiling Time: ~2 hours
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdebase
pkgver=3.4.1
pkgrel=2
pkgdesc="KDE Base Programs."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.1/src"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
makedepends=('samba' 'libusb' 'hal' 'j2re' 'cyrus-sasl')
depends=('kdelibs=3.4.1' 'libraw1394' 'lmsensors')
install=$pkgname.install
up2date="lynx -dump http://www.kde.org/download/ |grep kdebase|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2 xinitrc.kde frugalware.png kde.desktop)
md5sums=('8fbe0b943721b79f2549064b580acdde' '7b7330459463c5bb1387b56acbfdc64f' \
         '01a3162cd971c143104563242141d89b' '679d7a93f8fc770cd1d413c4736a86f0')

build()
{
	Fbuild --sysconfdir=/etc --disable-dependency-tracking || return 1

	# xinitrc for kde
	Fexe /etc/X11/xinit/xinitrc.kde
	
	# kdm logo
	Ffile /usr/share/apps/kdm/pics/frugalware.png

	# konsole configuration
	Fsed 'Exec=$' 'Exec=bash -ls' \
		$Fdestdir/usr/share/apps/konsole/shell.desktop
	chmod 644 $Fdestdir/usr/share/apps/konsole/shell.desktop
	
	# config files
	install -m644 $startdir/config/* $Fdestdir/usr/share/config/
	cd $Fdestdir/usr/share/config/
	mv {background,kdm}rc kdm/

	Ffile /etc/X11/sessions/kde.desktop
}

# vim: ft=sh
