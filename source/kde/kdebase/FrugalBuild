pkgname=kdebase
pkgrel=4
pkgdesc="Basic programs for KDE4"
groups=('kde')
archs=('i686' 'x86_64')
_F_kde_split_docs=1
_F_kde_subpkgs_custom_path=1
Finclude kde
depends=("libqtsvg>=$_F_kde_qtver" "libqtcore>=$_F_kde_qtver" 'libgcc' 'strigi' 'libice' 'libxft' 'libxpm' 'xfsprogs-acl' 'phonon' \
	'libjpeg' 'libgif' 'libpng' 'pcre' 'libxcursor' 'util-linux-ng' 'libxi' "libqt3support>=$_F_kde_qtver" 'soprano' \
	'libglu' "kdebase-workspace>=$_F_kde_ver" "libqtwebkit>=$_F_kde_qtver" 'libraw1394' 'pciutils')
replaces=('bscommander' 'kasablanca')

subpkgs=("${subpkgs[@]}" "libkonq")
subdescs=("${subdescs[@]}" "The embeddable part of konqueror")
subdepends=("${subdepends[@]}" "kdelibs>=$_F_kde_ver libqtxml>=$_F_kde_qtver libqtgui>=$_F_kde_qtver libgcc libice libxext libxrender util-linux-ng")
subgroups=("${subgroups[@]}" 'kde')
subarchs=("${subarchs[@]}" 'i686 x86_64')

subpkgs=("${subpkgs[@]}" "$pkgname-docs")
subdescs=("${subdescs[@]}" "Kdebase Documentation")
subdepends=("${subdepends[@]}" '')
subgroups=("${subgroups[@]}" 'docs-extra kde-docs')
subarchs=("${subarchs[@]}" 'i686 x86_64')

_F_kde_subpkgs=("${subpkgs[@]}")

rodepends=("${rodepends[@]}" "libkonq=$_F_kde_ver")
sha1sums=('7f8637367177c93916dfc2e6a2f6323a5e91c6ce')

build()
{
	KDE_make
	KDE_split
	KDE_project_split libkonq "apps/lib/konq"
	KDE_install
}

# optimization OK

