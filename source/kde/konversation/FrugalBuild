pkgname=konversation
pkgver=0.19
pkgrel=1
pkgdesc="Konversation IRC client for KDE"
url="http://konversation.kde.org/"
depends=('kdebase')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump http://konversation.kde.org/ |grep konversation-[^-]*tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://download.berlios.de/konversation/konversation-$pkgver.tar.bz2)
sha1sums=('d4463fc8413f6a6c35448ab9e600da6464bd6adf')

build()
{
	Fbuild --disable-debug --without-debug --with-gnu-ld \
		--disable-dependency-tracking
}
