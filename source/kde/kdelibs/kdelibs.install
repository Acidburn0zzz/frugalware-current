post_install()
{
	if ! [ `grep '/usr/lib' etc/ld.so.conf` ]; then
		echo "/usr/lib" >>etc/ld.so.conf
		sbin/ldconfig -r .
	fi
}

pre_remove()
{
	cat etc/ld.so.conf | grep -v '/usr/lib' >/tmp/.packde
	mv -f /tmp/.packde etc/ld.so.conf
	chmod 644 etc/ld.so.conf
	sbin/ldconfig -r .
}

op=$1
shift

$op $*

