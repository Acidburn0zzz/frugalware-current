pkgname=kdelibs
pkgver=3.5.5
pkgrel=7
pkgdesc="KDE Core Libraries."
depends=('arts>=1.5.5' 'hicolor-icon-theme' 'libxslt' 'pcre' 'lesstif' 'openssl' 'libart_lgpl' 'gamin'  'bzip2' \
         'xfsprogs-acl' 'openexr>=1.4.0a' 'libidn' 'aspell'  'jasper>=1.900.0' 'avahi-qt3>=0.6.14-2' \
	 'avahi-compat>=0.6.14-2' 'heimdal' 'rgb' 'qt>=3.3.7-3')
makedepends=('cups>=1.2.3' 'openldap' 'sane-backends' 'hspell' 'flex' 'opensp' \
		'openjade' 'doxygen' 'qt-docs>=3.3.7-3' 'graphviz')
rodepends=('dejavu-ttf' 'corefonts' 'aspell6-en')
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
Finclude kde
source=(${source[@]} kde.sh \
	http://ftp.frugalware.org/pub/other/people/crazy/kdediffs/kdelibs-br.patch \
	kdelibs-kill-broken-AM_LDFLAGS_use_foo_LDFLAGS_to_fix_automake1.10.patch \
        x-mplayer2.desktop \
	fw-default-dejavu-font.patch \
	avahi.patch inotify.patch  \
	kdeprintrc.patch \
	kbuildservicefactory.patch \
	distribution.patch)
## NOTE: if someone change fw-default-dejavu-font.patch its _NEED_ be in sync with
## fw-default-dejavu-font.patch from kdebase and both pkgs _NEED_ be recompiled!
sha1sums=('7961818e41e22cce7c58219c4eb63ed5fbb94307' \
          'b67afb54be3b2ac24ba9a491cb38a871a27a6316' \
          '975155c440c68cbc22a332f0787336f1501e13d4' \
          '916c2a2c5e28f4d72720d37348f9c813114adabf' \
          'e45f5f357859f243e627cfaa7bd9682ac49c2eab' \
          '9fa69d12efc57f8c9644379e040101d47a3bf9fe' \
          'b5b86e4dec97f2355f0a1ac42979cb8d4640bf42' \
          '28bc994050782f5e84839e70dcacf7422d990818' \
          '92a69598fca05c346e954ad55bb9ea9defa93b1e' \
          '9579606c340dc9b983e5f8d0b163e7e0ab7f90b4' \
          'dc36cd3f10324974038eb569cfa4e3fb95e790fa')


subpkgs=('kde-apidox')
subdescs=('KDE API Documentation')
subdepends=("$pkgname>=$pkgver doxygen qt-docs>=3.3.7")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build()
{
	Fcd
	Fpatchall
    	make -f admin/Makefile.common cvs || Fdie
    	Fmake	--with-distribution="Frugalware Linux" \
		--with-rgbfile=/usr/share/X11/rgb.txt \
	   	--disable-debug \
		--disable-warnings \
		--disable-dnotify \
		--enable-inotify \
		--enable-final \
		--enable-sendfile \
		--enable-gcc-hidden-visibility \
           	--with-{alsa,aspell,hspell,libart,acl}  \
           	--without-debug \
           	CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
		--without-lua-dir \
		--without-lua-includes \
		--without-lua-libraries \
		--enable-fast-malloc=no
	make apidox || return 1
	Fmakeinstall
	Fsplit kde-apidox usr/share/doc/HTML/en/kdelibs-apidocs
	Fexe /etc/profile.d/kde.sh
	Frm /usr/share/icons/hicolor/index.theme
	Ffile /usr/share/mimelnk/application/x-mplayer2.desktop
}

# optimization OK
