# Last Modified: Sat, 23 Jul 2005 00:26:05 +0200
# Compiling Time: ~2 hours
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdelibs
pkgver=3.4.1
pkgrel=2
pkgdesc="KDE Core Libraries."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.1/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
depends=('arts=1.4.1' 'hicolor-icon-theme' 'libxslt' 'pcre' 'lesstif' 'libart_lgpl' \
         'gamin' 'openldap' 'cups' 'bzip2')
install="$pkgname.install"
up2date="lynx -dump http://www.kde.org/download/ |grep kdelibs|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2 kde.sh)
md5sums=('67224e6b55856c23b0a162cab17dd1b4' 'daa9f2fb352cb8d664672e6316093528')
[ "$CARCH" != "x86_64" ] && fastmalloc=" --enable-fast-malloc=full "

build()
{
	Fprefix=/usr
	Fbuild --with-distribution="Frugalware Linux" \
		$fastmalloc \
		--disable-dependency-tracking || return 1
	Fexe /etc/profile.d/kde.sh
	Frm /usr/share/icons/hicolor/index.theme
}

# vim: ft=sh

# optimalization OK
