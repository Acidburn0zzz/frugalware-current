pkgname=kdelibs
pkgver=3.4.0
pkgrel=2
pkgdesc="KDE Core Libraries."
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.0/src"
url="http://www.kde.org"
groups=('kde' 'kde-core')
depends=('arts=1.4.0' 'libxslt' 'pcre' 'lesstif' 'libart_lgpl' \
         'gamin' 'openldap' 'cups' 'bzip2')
install="$pkgname.install"
up2date=`lynx -dump http://www.kde.org/download/ |grep kdelibs|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2 kde.sh)
md5sums=('e5961a78b44a3005a7af6ada249e5888' '5a0b21000db84bcc6a419c40449eb147')

build()
{
	Fprefix=/opt/kde
	Fbuild --with-distribution="Frugalware Linux" \
		--enable-fast-malloc=full \
		--disable-dependency-tracking || return 1
	Fexe /etc/profile.d/kde.sh
}

