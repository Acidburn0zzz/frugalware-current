# Last modified: Mon, 01 Aug 2005 10:51:34 +0200
# Compiling time: ~13.15 SBU
# Maintainer: Tamas Kapolnasi <ktamas@tdc.hu>
# Modified by Laszlo Dvornik <dvornik@gnome.hu>

pkgname=kdelibs
pkgver=3.4.2
pkgrel=2
pkgdesc="KDE Core Libraries"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.2/src"
url="http://www.kde.org/"
depends=('arts=1.4.2' 'hicolor-icon-theme' 'libxslt' 'pcre' 'lesstif' \
	'libart_lgpl' 'gamin' 'openldap' 'cups' 'bzip2')
groups=('kde' 'kde-core')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump http://www.kde.org/download/|grep kdelibs|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2 \
	00-$pkgname-3.4.2-fonts.patch \
	$pkgname.install \
	kde.sh)
md5sums=('fe69f2f5c66dffd8fc741dcff221b80c' \
	'6719f66d1c119178d70c0ba0bfec8551' \
	'32627105a5270e37011a9428048a8185' \
	'daa9f2fb352cb8d664672e6316093528')
[ "$CARCH" != "x86_64" ] && fastmalloc=" --enable-fast-malloc=full "

build()
{
	Fbuild --with-distribution="Frugalware Linux" \
		$fastmalloc \
		--disable-dependency-tracking
	Fexe /etc/profile.d/kde.sh
	Frm /usr/share/icons/hicolor/index.theme
}

# vim: ft=sh

# optimalization OK
