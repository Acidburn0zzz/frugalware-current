pkgname=kdebase-workspace
pkgrel=6
pkgdesc="Programs specific for the KDE4 desktop."
groups=('kde')
archs=('i686' 'x86_64')
_F_cmakekde_final=OFF
_F_kde_split_docs=1

replaces=('ksensors' 'katapult' 'tastymenu' 'kbfx' 'kdesktop-menu' 'kicker-compiz')

subpkgs=("$pkgname-docs")
subdescs=("Kdebase Workspace Documentation")
subdepends=('')
subgroups=('docs-extra kde-docs')
subarchs=('i686 x86_64')

_F_cmake_confopts="-DKDE4_COMMON_PAM_SERVICE=system-auth"
Finclude kde
rodepends=('kde-frugalware>=1.2')
depends=('consolekit' 'google-gadgets' 'libusb' 'libxcomposite' 'libxdamage' \
	'libxklavier>=4.0' 'libxxf86misc' 'lmsensors' 'libxtst' \
	"kdebase-runtime>=$_F_kde_ver" "kdepimlibs>=$_F_kde_ver" \
	'polkit-qt' 'qimageblitz' 'xdg-utils' 'dbus-x11')
makedepends=("${makedepends[@]}" 'boost' 'bluez-libs' 'xmms' )
sha1sums=('5b43447139d22247d5bc2deee8e3a944447f0bbf')

build()	{
	Fcd
	CMakeKDE_build
        Fsed "oxygen-air" "frugalware" $Fdestdir/etc/kde/config/kdm/kdmrc
        Fsed "default_blue.jpg" "frugalware.jpg" $Fdestdir/etc/kde/config/kdm/backgroundrc
}

# optimization OK

