# Last Modified: Wed, 02 Aug 2006 15:26:05 +0200
# Compiling Time: 0.42 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdeadmin
pkgver=3.5.4
pkgrel=1
pkgdesc="KDE Administration Programs."
groups=('kde')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.4')
Finclude kde
sha1sums=('cbdcca51a20d1c00617d5172bef4304005c9b475')

subpkgs=("$pkgname-docs")
subdescs=("Kdeadmin Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build ()
{
        Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                --disable-dependency-tracking \
                --disable-debug --without-debug \
                --with-gnu-ld \
                --enable-gcc-hidden-visibility \
                --with-shadow --without-rpm --enable-new-ldflags \
                DO_NOT_COMPILE="knetworkconf lilo-config ksysv"
        ## lol why is this gnome file there ?
        Frm /usr/lib/pkgconfig/system-tools-backends.pc
	Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
