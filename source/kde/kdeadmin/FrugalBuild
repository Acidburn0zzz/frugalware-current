# Last Modified: Fri, 18 Mar 2005 07:03:24 +0100
# Compiling Time: ~25 minutes
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdeadmin
pkgver=3.4.0
pkgrel=1
pkgdesc="KDE Administration Programs."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.0/src"
groups=('kde' 'kde-core')
depends=('kdebase=3.4.0')
up2date="lynx -dump http://www.kde.org/download/ |grep kdeadmin|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('d1db9fac4faca194cbda1e8189453363')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --disable-debug --with-shadow --without-rpm
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh
