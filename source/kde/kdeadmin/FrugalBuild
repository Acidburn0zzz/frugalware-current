pkgname=kdeadmin
pkgver=3.5.0
pkgrel=1
kdever=3.5
pkgdesc="KDE Administration Programs."
url="http://www.kde.org"
pkgurl="ftp://ftp.solnet.ch/mirror/KDE/stable/$kdever/src"
groups=('kde' 'kde-core')
archs=('i686')
depends=('kdebase=3.5.0')
up2date=$pkgver
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('e387fe33aac6198c48186928009ac81b4b81be6d')

build() 
{
        
	Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
               --disable-debug \
               --with-shadow \
               --without-rpm \
               --disable-dependency-tracking \
               --enable-new-ldflags \
               --with-gnu-ld \
               DO_NOT_COMPILE="ksysv lilo-config doc" 
}

# vim: ft=sh

# optimalization OK
