# Last Modified: Fri, 18 Mar 2005 16:03:20 +0100
# Compiling Time: ~1,3 hours
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kdebindings
pkgver=3.4.0
pkgrel=1
pkgdesc="KDE Bindings."
url="http://ww.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.0/src"
groups=('kde' 'kde-core')
makedepends=('j2sdk' 'python' 'gtk+')
depends=('kdebase=3.4.0')
up2date="lynx -dump http://www.kde.org/download/ |grep kdebindings|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('bac87a665ce5e5704f48336122052fb4')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
	rm -f $startdir/pkg/usr/lib/perl5/*/$CARCH-linux/perllocal.pod
}

# vim: ft=sh
