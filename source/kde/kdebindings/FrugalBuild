# Last Modified: Thu, 03 Aug 2006 01:25:22 +0200
# Compiling Time: 15.22 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdebindings
pkgver=3.5.4
pkgrel=1
pkgdesc="KDE Bindings."
groups=('kde')
archs=('i686' 'x86_64')
[ "$CARCH" != "x86_64" ] && makedepends=('j2sdk' 'gtk+' 'gcc-gcj' 'ruby')
[ "$CARCH" == "x86_64" ] && makedepends=('j2sdk' 'gtk+' 'ruby')
depends=('kdebase>=3.5.4' 'qscintilla')
Finclude kde
sha1sums=('cd7520e8c3bf9a8261b5ce9c6831624aa6ec8ade')

subpkgs=("$pkgname-docs")
subdescs=("Kdebindings Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build() 
{

        Fbuild  CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                 --disable-{debug,warnings} \
                 --disable-dependency-tracking \
                 --with-gnu-ld  \
                 DO_NOT_COMPILE="python" --enable-gcc-hidden-visibility \
                 --enable-qscintilla=yes --disable-final
        Frm /usr/lib/perl5/5*/$CARCH-linux-thread-multi/perllocal.pod
        Frm /usr/lib/perl5/5*/$CARCH-linux/perllocal.pod
	Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
