# Maintainer: crazy <malagarax@gmx.net>

pkgname=kdebindings
pkgver=3.5.0
pkgrel=1
kdever=3.5
pkgdesc="KDE Bindings."
url="http://ww.kde.org"
pkgurl="ftp://ftp.solnet.ch/mirror/KDE/stable/$kdever/src"
groups=('kde' 'kde-core')
archs=('i686')
makedepends=('j2sdk' 'gtk+' 'mono' 'ruby' 'gcc-gcj')
depends=('kdebase=3.5.0')
up2date=$pkgver
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('de902e7de40220bd1d13b6a244f952d33dfd8732')

build() 
{
	 
	 Fbuild  CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                 --disable-debug \
                 --disable-dependency-tracking \
                 --enable-new-ldflags \
                 --with-gnu-ld \
                 --with-x \
                 DO_NOT_COMPILE="python" 
      

	Frm /usr/lib/perl5/5*/$CARCH-linux-thread-multi/perllocal.pod
        Frm /usr/lib/perl5/5*/$CARCH-linux/perllocal.pod
}

# vim: ft=sh

# optimalization OK
