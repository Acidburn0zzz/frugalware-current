# Compiling Time: 15.22 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kdebindings
pkgver=3.5.5
pkgrel=3
pkgdesc="KDE Bindings."
groups=('kde')
archs=('i686' 'x86_64')
makedepends=('java-gcj-compat' 'gcc-gcj' 'gtk+' 'ruby')
depends=('kdebase>=3.5.5' 'qscintilla')
Finclude kde
source=($source kdebindings-br.patch kdebindings-3.5.4-java.diff)
sha1sums=('42b6a70280f2f7b0c0d90c236b983a68ea6a70c4' \
          '1d6c4fe0616789d6694b7a9951955d39f84f626b' \
          'c9dea175a28fd49bf426dc0926703b30974f5415')

subpkgs=("$pkgname-docs")
subdescs=("Kdebindings Documentation")
subdepends=("$pkgname=$pkgver")
subgroups=('kde-extra kde-docs')
subarchs=('i686 x86_64')

build() 
{
	unset MAKEFLAGS
        Fbuild  CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                 --disable-{debug,warnings} \
                 --disable-dependency-tracking \
                 --with-gnu-ld  \
                 DO_NOT_COMPILE="python" --enable-gcc-hidden-visibility \
                 --enable-qscintilla=yes --disable-final --with-java=/usr/
        Frm /usr/lib/perl5/5*/$CARCH-linux-thread-multi/perllocal.pod
        Frm /usr/lib/perl5/5*/$CARCH-linux/perllocal.pod
	Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
