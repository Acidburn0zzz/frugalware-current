pkgname=kdebindings
pkgver=3.3.1
pkgrel=1
pkgdesc="KDE Bindings."
url="http://ww.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.3.1/src"
groups=('kde')
makedepends=('j2sdk' 'python' 'gtk+')
depends=('kdebase=3.3.1')
up2date=`lynx -dump http://www.kde.org/download/ |grep kdebindings|sed -n '1 p'|tr -s ' '|cut -d ' ' -f 2|cut -d - -f 2`
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=('fd64783a92e66a2405b9e25f7322c222')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
	rm -f $startdir/pkg/usr/lib/perl5/*/$CARCH-linux/perllocal.pod
}

# vim: ft=sh
