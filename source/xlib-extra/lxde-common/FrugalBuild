# Compiling Time: 0.04 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=lxde-common
pkgver=0.3.2.1
pkgrel=1
pkgdesc="Common files of the LXDE Desktop"
depends=('glib2' 'libx11')
groups=('xlib-extra' 'lxde-desktop')
archs=('i686')
_F_sourceforge_dirname="lxde"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
source=($source lxde.desktop)
url="http://lxde.org/"
sha1sums=('7de00f580bc98194bc665a59b010e0ab1421acde' \
          'f5a62ef8ece3bee46a610ffac31f9a1b64845326')

build() {
	Fbuild
	Fmkdir  /etc/X11/sessions/
	cd .. || Fdie
	Fcp lxde.desktop  etc/X11/sessions/lxde.desktop
}

# optimization OK
