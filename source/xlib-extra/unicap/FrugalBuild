pkgname=unicap
pkgver=0.2.3
pkgrel=1
pkgdesc="unicap provides a uniform API for all kinds of video capture devices."
url="http://unicap-imaging.org/"
depends=('libxv' 'gtk+2' 'freetype2>=2.3.1' 'libraw1394')
options=('scriptlet')
groups=('xlib-extra')
archs=('i686')
up2date="lynx -dump http://unicap-imaging.org/download.htm|grep -m1 '.tar.gz'|sed 's/.*cap-\(.*\).t.* .*/\1/'"
source=($url/downloads/$pkgname-$pkgver.tar.gz)

sha1sums=('4d795c6914d6bba353fff46315b9ffc9de38e37f')
# optimization OK
