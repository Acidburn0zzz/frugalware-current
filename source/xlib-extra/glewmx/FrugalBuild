# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=glewmx
pkgver=1.5.7
pkgrel=1
pkgdesc="A cross-platform C/C++ extension loading library (MX version)"
depends=('glew')
makedepends=('mesa')
groups=('xlib-extra')
archs=('i686' 'x86_64' 'ppc')
_F_sourceforge_name="glew"
_F_sourceforge_dirname="glew"
_F_sourceforge_ext=".tgz"
Finclude sourceforge
source=($source $_F_sourceforge_name-$pkgver-mx-build-patch.diff)
sha1sums=('4adc816afbfb65a4969484d10343a88c117ca989' \
          '5594245fb60654666ea3c7a9b74d4d20596e1a89')

build()
{
	Fcd
	Fpatchall
	Fsed "lib64" "lib" config/Makefile.linux
	make GLEW_MX=1 libsonly || Fdie
	make GLEW_DEST=$Fdestdir/usr GLEW_MX=1 install-libs || Fdie
	# # Remove unwanted files - also deleting headers as they are the same present in  glew package
	Frm usr/include/GL/*.h
}

# optimization OK

