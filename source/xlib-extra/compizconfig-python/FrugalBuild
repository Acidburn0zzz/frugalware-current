# Compiling Time: 0.05 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=compizconfig-python
_F_compiz_name=compiz-$pkgname
Finclude compiz
pkgrel=1
pkgdesc="Python bindings for libcompizconfig"
depends=('libxml2>=2.7.8' 'python' 'pkgconfig' 'pyrex' 'libcompizconfig>=0.9.4' 'cython')
groups=('xlib-extra')
archs=('i686' 'x86_64')
sha1sums=('8c003c3ea240ef38cc90839c1d1f680af303244d')

build()
{
	Fcd $pkgname
	python setup.py build || Fdie
	python setup.py install --root="$Fdestdir" || Fdie
}

# optimization OK
