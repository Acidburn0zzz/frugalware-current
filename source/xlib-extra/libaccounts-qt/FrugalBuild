# Compiling Time: 0.20 SBU
# Maintainer: Melko <melko@frugalware.org>

options+=('asneeded')

pkgname=libaccounts-qt
pkgver=1.9
pkgrel=1
pkgdesc="Glib-based client library for accessing the online accounts database."
depends=('libqtcore' 'libaccounts-glib' 'libqtxml')
makedepends=('libqttest' 'doxygen')
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_googlecode_name="accounts-qt"
_F_googlecode_dirname="accounts-sso"
_F_googlecode_ext=".tar.bz2"
Finclude googlecode
sha1sums=('86d7bbaa7bdd18f80a28c2617653707d763d1984')

build() {
	Fcd
	qmake PREFIX="$Fprefix" LIBDIR="$Fprefix/lib"
	Fmake
	Fmakeinstall INSTALL_ROOT="$Fdestdir"
}

# optimization OK
