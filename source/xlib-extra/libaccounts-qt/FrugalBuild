# Compiling Time: 0.20 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=libaccounts-qt
pkgver=1.14
pkgrel=1
pkgdesc="Qt-based client library for accessing the online accounts database."
depends=('libaccounts-glib' 'qt5-base')
makedepends=('doxygen' 'qt5-tools')
groups=('xlib-extra')
archs=('i686' 'x86_64')
url="https://gitlab.com/accounts-sso/libaccounts-qt"
_F_scm_type="git"
_F_scm_url="https://gitlab.com/accounts-sso/libaccounts-qt.git"
_F_scm_tag="VERSION_$pkgver"
Finclude scm

build() {
	Funpack_scm
	Fcd
	qmake-qt5 PREFIX="$Fprefix" LIBDIR="$Fprefix/lib"
	Fmake
	Fmakeinstall INSTALL_ROOT="$Fdestdir"
}

# optimization OK
