# Contributor: enda <enda@netou.com>

pkgname=matplotlib
pkgver=0.99.1.2
pkgrel=1
pkgdesc="A python 2D plotting library for easy plotting of plots, histograms, charts."
depends=('numpy' 'pygtk>=2.16.0-4' 'python-dateutil' 'configobj>=4.6.0')
Finclude sourceforge python
source=($source $pkgname-libpng14.patch)
_F_cd_path="$pkgname-0.99.1.1"
groups=('xlib-extra')
archs=('i686' 'x86_64')
sha1sums=('c3f9053a8522e2541d93ee55e8b447165708ac15' \
          'bf77d3e87c5dc14749ad58683efd2a9af99a3fb8')

build() {
	Fcd
	Fpatchall
	python setup.py build || Fdie
	python setup.py install --root $Fdestdir --prefix=/usr || Fdie
}

# optimization OK
