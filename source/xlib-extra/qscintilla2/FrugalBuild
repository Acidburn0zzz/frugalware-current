# Compiling Time: 0.3 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qscintilla2
pkgver=20070117
origname=QScintilla
pkgrel=1
pkgdesc="QScintilla2 is a port to Qt of Neil Hodgson's Scintilla C++ editor class."
url="http://www.riverbankcomputing.co.uk/qscintilla"
up2date="lynx -dump http://www.riverbankcomputing.com/Downloads/Snapshots/QScintilla2/|Flasttar"
source=(http://www.riverbankcomputing.com/Downloads/Snapshots/${origname}2/$origname-1.72-gpl-2-snapshot-$pkgver.tar.gz \
	broken-destdir.patch)
groups=('xlib-extra')
archs=('i686' 'x86_64')
depends=('qt4>=4.2.2' 'libxi' 'libstdc++' 'libice' 'libxrender')
sha1sums=('988eede3235ac06ab534b69b35bf8a83a98f6b69' \
          '5e54eaa895f0c83aa292d473e8bd91c91543ba09')


build()
{
	Fcd $origname-1.72-gpl-2-snapshot-$pkgver
	Fpatchall
	source /etc/profile.d/qt4.sh.off
	cd Qt4
	qmake qscintilla.pro || Fdie
	Fmakeinstall INSTALL_ROOT=$Fdestdir || Fdie
}



# optimization OK
