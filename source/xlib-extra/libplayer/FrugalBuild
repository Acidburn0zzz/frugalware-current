# Compiling Time: 0.06 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=libplayer
pkgver=1.0.0
pkgrel=1
pkgdesc="A multimedia A/V abstraction layer API."
depends=('xine-lib' 'mplayer' 'gstreamer')
url=http://libplayer.geexbox.org/
urldl=http://libplayer.geexbox.org/releases
source=($urldl/$pkgname-$pkgver.tar.bz2)
up2date="Flasttar $urldl"
groups=('xlib-extra')
archs=('i686')
options=('scriptlet')
Fconfopts="$Fconfopts --prefix=$Fdestdir/usr"
sha1sums=('8c4b978e9274b389887c5e663b25d9733b7d4e33')

build() {
	Fcd
	Fmake
	Fsed "$Fdestdir" "" libplayer.pc
	Fmakeinstall
}

# optimization OK
