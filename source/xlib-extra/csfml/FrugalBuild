# Compiling Time: 0.01 SBU
# Maintainer: Kooda <kooda@upyum.com>

pkgname=csfml
pkgver=1.6
pkgrel=1
pkgdesc="C binding of SFML API"
url="http://www.sfml-dev.org/"
depends=('sfml')
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext="-c-sdk-linux-32.tar.gz"
_F_sourceforge_name="SFML"
_F_sourceforge_dirname="sfml"
Finclude sourceforge
up2date="lynx -dump http://www.sfml-dev.org/./download.php | grep -m1 'dev-linux' | cut -d '-' -f 2"
sha1sums=('a1266484200e847bbd453960896bdf924e45477a')

build() {
	Fcd SFML-$pkgver/CSFML/
	Frm lib/*
	Fmake
	Fmakeinstall DESTDIR=$Fdestdir/usr/
	Fdocrel doc/*
}

