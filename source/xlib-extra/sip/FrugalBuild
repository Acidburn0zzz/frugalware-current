# Compiling Time: 0.13 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=sip
pkgver=4.18.1
pkgrel=1
pkgdesc="Python 2.x SIP bindings for C and C++ libraries"
url="http://www.riverbankcomputing.co.uk/software/sip"
depends=('python>=2.7')
rodepends=("$pkgname-tool")
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="pyqt"
_F_sourceforge_rss_limit=50
Finclude sourceforge
sha1sums=('a4040e9fbb0e4c764e637c36fa8504722f0bfdf4')
options+=('scriptlet')

subpkgs=("$pkgname-python3")
subdescs=("Python 3.x SIP bindings for C and C++ libraries")
subdepends=("python-3.0>=3.4.1")
subrodepends=("$pkgname-tool")
subgroups=('xlib-extra')
subarchs=('i686 x86_64')

subpkgs+=("$pkgname-tool")
subdescs+=("A tool that makes it easy to create Python bindings for C and C++ libraries")
subdepends+=("")
subrodepends+=("")
subgroups+=('xlib-extra')
subarchs+=('i686 x86_64')


build()
{
	cp -r $Fsrcdir/$pkgname-$pkgver $Fsrcdir/python3-$pkgname-$pkgver || Fdie
	Fcd python3-$pkgname-$pkgver
	python3 configure.py CFLAGS="$CFLAGS -w" LFLAGS="$LDFLAGS" || Fdie
	Fbuild
	Frm /usr/bin

	Fsplit $pkgname-python3 /usr

	cd $Fsrcdir/$pkgname-$pkgver || Fdie
	python configure.py CFLAGS="$CFLAGS -w" LFLAGS="$LDFLAGS" || Fdie
	Fbuild

	Fsplit $pkgname-tool /usr/bin
}

# optimization OK
