sha1sums=('890232ac56511702f886f3d202bafed25a160544')

build() {
    
	Fcd
	rm -rf *synce* README || Fdie
	
	## something ugly but the other way is
	## a bit of more mess :-)
	## move all folders to match $subpkg
	for i in `ls -d *`
	do
		j=`echo $i | sed 's/_/-/;s/-[0-9].*//;s/-plugin//g'`
		mv ${i} claws-mail-plugin-${j} || Fdie
	done
	
	for pkg in "${subpkgs[@]}"
	do
		cd $pkg || Fdie
		Fbuild
		Fsplit $pkg /usr	
        	cd .. || Fdie
	done 
   
}

# optimization OK
