# Compiling Time: 0.05 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=flam3
pkgver=2.7.18
pkgrel=3
pkgdesc="Tools and a library for creating flame fractal images"
url="http://flam3.com/"
depends=('libjpeg>=8a' 'libxml2' 'libpng>=1.4.1')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/index.cgi?menu=download"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('e4b6420bc4c47f489903a0fedf66d39f5ada7aaa')

build() {
	Fsed "libpng12 >= 1.0" "libpng14 >= 1.4.1" flam3.pc.in
	Fbuild
}

# optimization OK
