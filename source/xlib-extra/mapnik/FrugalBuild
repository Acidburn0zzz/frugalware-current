# Compiling Time: 1.99 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=mapnik
pkgver=0.6.1
pkgrel=2
pkgdesc="Free Toolkit for developing mapping applications"
depends=('libboost-mt' 'libxml2' 'sqlite3' 'cairomm' \
	'pycairo' 'proj' 'libtiff' 'libjpeg' 'libxaw>=1.0.5')
makedepends=('scons' 'boost')
Finclude berlios
groups=('xlib-extra')
archs=('i686')
sha1sums=('84b0e9f9c3368ecddd856eeff40b97d75074f338')

build() {
	Fcd
	scons configure || Fdie
	scons DESTDIR=$Fdestdir install || Fdie
	Fmv usr/local/lib/* usr/lib/
	Frm usr/local/lib
	Fmv usr/local/* usr/
	Frm usr/local
}
