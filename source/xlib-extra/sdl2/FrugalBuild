pkgname=sdl2
_F_archive_name="SDL2"
pkgver=2.0.4
pkgrel=1
url="http://libsdl.org"
pkgdesc="Simple DirectMedia Layer library v2"
groups=('xlib-extra')
archs=('i686' 'x86_64')
depends=('glibc>=2.22-7')
makedepends=('wayland>=1.9.0-2' 'libxext>=1.3.3-2' 'libstdc++>=5.3.0-2' 'alsa-lib>=1.1.0-2' 'aalib>=1.4rc5-8' 'mesa>=11.1.0-3' \
	'libgl>=11.1.0-3' 'libglu>=9.0.0-2' 'libxcursor>=1.1.14-2' 'libpulse>=7.1-4' 'x11-protos' 'libxkbcommon>=0.5.0-3' \
	'libxscrnsaver>=1.2.2-2' 'libxi>=1.7.6' 'libxinerama>=1.1.3-2' 'libice>=1.0.9-2' 'libxrender>=0.9.9-4' \
	'libxrandr>=1.5.0-4' 'dbus>=1.10.6-5' 'libsystemd>=227-14') ## ibus support
up2date="Flasttar $url/release/"
source="$url/release/$_F_archive_name-$pkgver.tar.gz"
sha1sums=('470a23dfc4b6220c687925ebbe5fe96287f8fb08')
options+=('static') ## won't build without that
_F_confopts+=(" --disable-arts --disable-esd \
	--disable-nas --enable-pulseaudio-shared --enable-alsa \
	--disable-rpath --enable-video-wayland --enable-sdl-dlopen")

