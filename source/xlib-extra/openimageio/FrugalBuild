# Compiling Time: 4.20 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=openimageio
pkgver=1.6.14
pkgrel=1
pkgdesc="A library for reading and writing images, including classes, utilities, and applications."
url="http://www.openimageio.org/"
depends=('libboost>=1.58.0' 'opencv' 'glew>=1.13' 'ilmbase>=2.2.0')
makedepends=('boost>=1.58.0')
groups=('xlib-extra')
archs=('i686' 'x86_64')
Finclude cmake
_F_archive_name="Release"
_F_archive_grepv="beta\|RC\|dev"
up2date="Flasttar https://github.com/OpenImageIO/oiio/releases"
source=("https://github.com/OpenImageIO/oiio/archive/$_F_archive_name-$pkgver.tar.gz")
sha1sums=('93177c35a859abb919fb385a7833571b4f188193')
_F_cd_path=oiio-Release-$pkgver


build() {
	CMake_build
	make || Fdie
}

# optimization OK
