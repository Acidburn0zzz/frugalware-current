# Compiling Time: 2.32 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=openlibraries
pkgver=0.4.0
pkgrel=1
pkgdesc="Powerful cross-platform set of libraries to test and deploy rich media applications."
Finclude sourceforge
depends=('boost' 'glew' 'libgcc' 'libjpeg' 'libpng' 'libtiff' 'freeglut' 'openal' 'sqlite3')
groups=('xlib-extra')
archs=('i686')

build() {
	Fbuild --disable-debug --disable-cg --disable-gelato \
		--enable-sqlite3 --enable-openal --with-x \
		--with-boostruntime=mt --with-boostthreadruntime=mt
}
sha1sums=('7ebe24cfdc16c4869a74c0736bd4069f1ceff44c')

# optimization OK
