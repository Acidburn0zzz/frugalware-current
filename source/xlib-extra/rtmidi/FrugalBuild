# Compiling Time: 0 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=rtmidi
pkgver=2.1.1
pkgrel=1
pkgdesc="A set of C++ classes that provides a common API for realtime MIDI input/output."
url="http://www.music.mcgill.ca/~gary/rtmidi"
depends=('jack')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($url/release/$pkgname-$pkgver.tar.gz)
sha1sums=('181e62280f7dedda992237b07898492ce1a25f05')

build() {
	Fcd
	Fconf --prefix=/usr --with-alsa --with-jack
	Fmake
	Fmakeinstall

	# Install utils
	for i in `find tests/.libs -maxdepth 1 -type f -perm 755 ! -name "*.*"`;
	do
		Fexerel $i "usr/bin/${pkgname}-"`basename $i`
	done

	# Install documentation
	Fdocrel readme doc/release.txt
	Fdocrel doc/{html,images}
}

# optimization OK
