# Compiling Time: 0.04 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>
# Contributor: Ramos Adrien <adrien.ramos@upyum.com>

pkgname=sfml
pkgver=1.5
pkgrel=1
pkgdesc="SFML is a free multimedia C++ API."
url="http://sfml-dev.org/"
depends=('glew' 'openal' 'libsndfile' 'freetype2' 'libxrandr')
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext="-sdk-linux-32.tar.gz"
_F_sourceforge_name="SFML"
Finclude sourceforge
up2date="lynx -dump http://www.sfml-dev.org/./download.php | grep -m1 'dev-linux' | cut -d '-' -f 2"
sha1sums=('1c4b3719c331729fd2a74412bfae9fa818cee86b')

build() {
	Fcd SFML-$pkgver
	Frm -r lib/* || Fdie
	Fmake

	Fmakeinstall DESTDIR=$Fdestdir
}
