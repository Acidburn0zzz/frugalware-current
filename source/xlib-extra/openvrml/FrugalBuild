Finclude sourceforge
depends=('mesa' 'freeglut' 'libboost-mt' 'fontconfig' 'dbus-glib' 'gtk+2>=2.20.1' 'glade' 'curl' 'sdl')
makedepends=('boost' 'xulrunner')
groups=('xlib-extra')
