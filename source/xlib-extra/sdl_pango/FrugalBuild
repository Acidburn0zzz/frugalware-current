pkgname=sdl_pango
pkgver=0.1.2
pkgrel=2
pkgdesc="SDL Pango library"
url="http://sdlpango.sourceforge.net/"
depends=('sdl' 'pango')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=110621&package_id=130127' | grep -m 1 SDL_Pango-.*.tar.gz | sed 's/.*-\(.*\)\.t.*/\1/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/sdlpango/SDL_Pango-$pkgver.tar.gz \
	http://zarb.org/~gc/t/SDL_Pango-0.1.2-API-adds.patch)
sha1sums=('c30f2941d476d9362850a150d29cb4a93730af68' \
	  '20a8441a7e051e8928400c89dedbb6ef169c7c65')

build() {
	Fcd SDL_Pango-$pkgver
	Fbuild
}

# optimization OK
