post_install()
{
	if ! [ `grep '/usr/lib/openmotif/lib' /etc/ld.so.conf` ]; then
		echo "/usr/lib/openmotif/lib" >> /etc/ld.so.conf
		/sbin/ldconfig -r .
	fi
}

post_upgrade()
{
	post_install
}

pre_remove()
{
	sed '/^openmotif/d' -i /etc/ld.so.conf
	chmod 644 /etc/ld.so.conf
	/sbin/ldconfig -r .
}

op=$1
shift

$op $*
