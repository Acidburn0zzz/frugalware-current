pkgname=mplayerplug-in
pkgver=3.45
pkgrel=1
pkgdesc="A browser plugin that uses mplayer to play digital media from websites"
depends=('nss' 'libxpm' 'mplayer')
makedepends=('seamonkey')
groups=('xlib-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
url="http://mplayerplug-in.sourceforge.net/"
up2date="lynx -dump $url|grep Current|sed 's/.*: \(.*\) r.*/\1/'"
_F_cd_path="$pkgname"
Fconfopts="$Fconfopts --enable-x"
source=(${source[@]} mplayerplug-in-gcc4.patch)
sha1sums=('39a888c6e65b83f862abef83f5e0381ec7a6a6ea' \
          'aca3e9f0a69bac7aaeb6ade07b7cf31509163fd4')
