# Compiling Time: 1.49 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=ugene
pkgver=1.11.4
pkgrel=1
pkgdesc="A free cross-platform genome analysis suite"
url="http://ugene.unipro.ru"
depends=('libqtwebkit' 'libqtscript' 'libqttest' 'libqtopengl')
groups=('xlib-extra')
archs=('i686' 'x6_64')
options=('scriptlet')
up2date="lynx -dump $url/downloads/ugene_get_latest_source.html | Flasttar"
source=($url/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('9c6b0fc6a2357a1a6d422c980a2886aa193656fe')

build() {
	Fcd

	if [[ $CARCH = "i686" ]]
	then
		qmake PREFIX=/usr
	elif [[ $CARCH = "x86_64" ]]
	then
		qmake CONFIG+=x64 PREFIX=/usr
	fi

	Fmake
	Fmakeinstall INSTALL_ROOT="$Fdestdir"
}

# optimization OK
