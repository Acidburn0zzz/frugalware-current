# Compiling Time: 7.82 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=ugene
pkgver=1.13.2
pkgrel=1
pkgdesc="A free cross-platform genome analysis suite"
url="http://ugene.unipro.ru"
depends=('libqtwebkit' 'libqtscripttools' 'libqttest' 'libqtopengl')
makedepends=('qt4-linguist')
groups=('xlib-extra')
archs=('i686' 'x6_64')
options=('scriptlet')
up2date="lynx -dump $url/downloads/ugene_get_latest_source.html | Flasttar"
source=($url/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('b915cf0d45147e212e18cedda4c2c3938e1b5ce8')

build() {
	Fcd

	if [[ $CARCH = "i686" ]]
	then
		qmake PREFIX=/usr
	elif [[ $CARCH = "x86_64" ]]
	then
		qmake CONFIG+=x64 PREFIX=/usr
	fi

	Fmake
	Fmakeinstall INSTALL_ROOT="$Fdestdir"
}

# optimization OK
