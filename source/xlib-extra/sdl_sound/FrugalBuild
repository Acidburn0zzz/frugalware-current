# Contributor: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=sdl_sound
pkgver=1.0.3
pkgrel=3
pkgdesc="A library to decode several popular sound file formats"
url="http://icculus.org/SDL_sound/"
depends=('sdl' 'libmikmod>=3.3.8' 'libvorbis' 'flac>=1.1.3' 'speex>=1.2beta3.2')
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_archive_name="SDL_sound"
up2date="Flasttar http://icculus.org/SDL_sound/downloads"
source=(http://icculus.org/SDL_sound/downloads/SDL_sound-$pkgver.tar.gz)

build()
{
	Fcd
	Fpatchall
	autoconf || return 1
	Fmake
	Fmakeinstall
}

sha1sums=('1984bc20b2c756dc71107a5a0a8cebfe07e58cb1')
# optimization OK
