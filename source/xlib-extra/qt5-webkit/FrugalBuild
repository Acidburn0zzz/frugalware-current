pkgname=qt5-webkit
pkgrel=1
depends=('qt5-declarative')
makedepends=('ruby' 'x11-protos')
Finclude qt5
replaces=('libqt5webkit')
conflicts=("${replaces[@]}")
provides=("${replaces[@]}")
source=("http://download.qt.io/development_releases/qt/${pkgver%.*}/${pkgver}-rc/submodules/qtwebkit-opensource-src-${pkgver}.tar.xz" \
	qt5-webkit-pthread.patch)
sha1sums=('a68e8bfdf237cfb6b958674a3b609fcb2f8423f3' \
          '93cffd17c76d43dbb1c7e1768ad8aae19635d953')


build()
{
	Fpatchall
	syncqt.pl-qt5 -version 5.6.0 Source/sync.profile || Fdie
	build_qt5
}

# optimization OK
