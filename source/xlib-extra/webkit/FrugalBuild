pkgname=webkit
pkgver=1.1.10
pkgrel=2
pkgdesc="Open source web browser engine that's used by Safari"
url="http://www.webkit.org"
depends=('sqlite3' 'gtk+2>=2.16.2-2' 'icu4c>=4.2' 'libsoup>=2.26.0' 'libpng' 'gperf'
	'cairo' 'libxml2' 'pango' 'gst-plugins-base' 'enchant' 'gail')
makedepends=('bison' 'flex' 'gtk-doc')
groups=('xlib-extra')
archs=('i686' 'x86_64' 'ppc')
source=(http://webkitgtk.org/$pkgname-$pkgver.tar.gz)
up2date="lynx -dump -source http://webkitgtk.org/?page=download | Flasttar"
options=('scriptlet')
Fconfopts="${Fconfopts[@]} --enable-icon-database --enable-svg \
	--enable-video --enable-svg-use-element \
	--enable-svg-filters \
	--enable-svg-as-image --enable-svg-animation \
	--disable-wml --with-http-backend=soup \
	OUTPUT_DIR=$Fdestir \
	WEBKIT_INC_DIR=/usr/include/WebKit \
	WEBKIT_LIB_DIR=/usr/lib"
sha1sums=('8f0637c936b4f62fb21c8d0c35298e5c0317fd0a')

# optimization OK
