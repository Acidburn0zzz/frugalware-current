# Compiling Time: 0.1 SBU
# Maintainer: Elentir <elentir@mailoo.org>

pkgname=fwifecd-config
pkgver=0.2
pkgrel=1
pkgdesc="Xorg, Gtk and Openbox themes and configuration files for Fwife Install CD"
url="http://elentir.toile-libre.org/"
depends=()
groups=('xlib-extra')
archs=('i686' 'x86_64')
source=($url/fwife/$pkgname-$pkgver.tar.gz)
up2date="Flasttar $url/?page_id=115"
sha1sums=('8614115cc2300576f4a4a19f0b93687f1bada451')

build()
{
	Fcd
	Fmkdir usr/share/fwifecd-config/
	Fcp $_F_cd_path/* usr/share/fwifecd-config/
}
