# Compiling Time: 64.56 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname=qt5-base
_F_archive_name=qt-everywhere-opensource-src
pkgver=5.5.1
pkgrel=2
pkgdesc="The Qt5 GUI toolkit."
url="http://www.qt.io"
depends=('desktop-file-utils' 'xdg-utils' 'libxkbcommon' 'xcb-util-image' 'xcb-util-wm' 'dbus' 'harfbuzz' \
	 'libcups' 'libpng' 'libjpeg' 'libinput' 'unixodbc' 'libtool' 'libmysqlclient' 'libpq' 'sqlite3' \
         'libsystemd' 'alsa-lib'  'gperf' 'glib2>=2.46.1' 'libevdev' 'libxcursor' 'libxcb' 'libxi' \
         'pulseaudio' 'pcre' 'libxrender' 'mtdev' 'libinput' 'gst1-plugins-base' 'libgl')
makedepends=('cups>=1.3.11-4' 'postgresql' \
	     'inputproto' 'renderproto' 'mysql')

groups=('xlib-extra')
archs=('i686' 'x86_64')
options=('nodocs')
up2date="Flasttar $url/download-open-source/"
source=(http://download.qt.io/archive/qt/5.5/${pkgver}/submodules/qtbase-opensource-src-${pkgver}.tar.xz)
sha1sums=('0b651543fa013ae151b7a11f0d0dee092050aa3f')
_F_cd_path=qtbase-opensource-src-${pkgver}


build()
{
	Fpatchall

	Fconfopts+=" -prefix /usr \
		-bindir /usr/lib/qt5/bin \
		-headerdir /usr/include/qt5 \
		-archdatadir /usr/share/qt5 \
		-plugindir /usr/lib/qt5/plugins \
		-datadir /usr/share/qt5 \
		-docdir /usr/share/doc/qt5 \
		-sysconfdir /etc/qt5 \
		-system-sqlite \
		-no-rpath \
		-release \
		-opensource \
		-confirm-license \
		-verbose \
		-openssl-linked \
		-optimized-qmake \
		-dbus-linked \
		-nomake examples \
		-reduce-relocations \
		-cups -nis -pch -opengl \
		-system-libpng \
		-system-libjpeg \
		-system-zlib \
		-system-pcre \
		-system-harfbuzz \
		-system-proxies \
		-libinput \
		-gstreamer 1.0 \
		-journald"

	Fmake
	make  INSTALL_ROOT=$Fdestdir install || Fdie
	for i in ${Fdestdir}/usr/lib/qt5/bin/*; do
		q5=`basename ${i}`
		Fln /usr/lib/qt5/bin/${q5} /usr/bin/${q5}-qt5
        done

	## remove some junk
	rm -rf -v $(find ${Fdestdir}/usr/share/qt5/mkspecs/ -type d | \
		egrep -v '(linux-g++|common|modules|pri|features|devices)') || Fdie
}

# optimization OK

