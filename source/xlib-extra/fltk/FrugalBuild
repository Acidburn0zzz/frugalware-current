pkgname=fltk
pkgver=1.3.3
pkgextraver="-source"
pkgrel=4
pkgdesc="FLTK is a cross-platform C++ GUI toolkit for X"
url="http://www.fltk.org/"
depends=('libxft>=2.3.2-2' 'libxinerama>=1.1.3-2' 'libpng>=1.6.20' 'libjpeg>=9b' 'libgl>=11.1.1-1')
makedepends=('x11-protos')
groups=('xlib-extra')
archs=('i686' 'x86_64' 'arm')
_F_archive_grepv="3.0.x\|rc"
up2date="Flastverdir $url/pub/$pkgname"
source=("http://fltk.org/pub/$pkgname/$pkgver/$pkgname-$pkgver-source.tar.gz" \
	"fltk-1.3.3-no_undefined.patch" \
	"fltk-1.3-L3156.patch" \
	fix-boolean-issue-with-jpeg9.patch)
sha1sums=('873aac49b277149e054b9740378e2ca87b0bd435' \
          'f9b795b25ef58c7612e13d1169a8bb14d0e04a38' \
          'ada0b06f12b9e0ede47879b4d6b6ea73fafb90e3' \
          'e42b58c10be78c7c3c727ca546399eb7d0cb9763')
Fconfopts=" --enable-threads --enable-xft --enable-shared --with-x"
_F_archive_ver="$pkgver"

build()
{
	Fbuild
	Frm /usr/share/man/cat{1,3}
}

# optimization OK
