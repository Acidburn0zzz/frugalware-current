pkgname=libipoddevice
pkgver=0.5.2
pkgrel=1
pkgdesc="libipoddevice is a device-specific layer for the Apple iPod"
url="http://banshee-project.org/Libipoddevice"
depends=('hal' 'libgtop' 'libxau' 'sg3-utils')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep -m1 'libipoddevice-' | sed 's/.*-\(.*\) .*/\1/'"
source=(http://banshee-project.org/files/$pkgname/$pkgname-$pkgver.tar.gz)

