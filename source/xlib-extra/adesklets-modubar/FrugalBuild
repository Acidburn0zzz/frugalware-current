# Compiling Time: 0 SBU
# Maintainer: Tuxbubling <tuxbubling@tiscali.fr>

pkgname=adesklets-modubar
realname=modubar
pkgver=0.0.1
pkgrel=2
pkgdesc="Modular version of the Yab toolbar desklets. (launch bar)"
url="http://adesklets.sourceforge.net/desklets.html"
depends=('adesklets')
groups=('xlib-extra' 'adesklets-desklets')
archs=('i686' 'x86_64')
up2date="lynx -dump http://adesklets.sourceforge.net/desklets.html | grep modubar | sed -ne 's/.* //;1 p'"
source=(http://dl.sourceforge.net/adesklets/$realname-$pkgver.tar.bz2)
sha1sums=('23766b1ecb4c3aa372202307cf88874bf25a0cfe')

build()
{
	Fmkdir usr/share/adesklets/modubar
	Fmkdir usr/share/doc/$pkgname-$pkgver
	Fcd $realname-$pkgver
	mv {modubar.py,icons/} $Fdestdir/usr/share/adesklets/modubar/
	mv config* $Fdestdir/usr/share/doc/$pkgname-$pkgver/
	chgrp -R users $Fdestdir/usr/share/adesklets/modubar/
	chmod -R 775 $Fdestdir/usr/share/adesklets/modubar/
}

# optimalization no-arch
# vim: ft=sh
