pkgname=wxsvg
pkgver=1.0b10
pkgrel=1
pkgdesc="wxSVG is C++ library to create, manipulate and render SVG files"
_F_sourceforge_broken_up2date=1
Finclude sourceforge
url="http://www.wxsvg.org/"
depends=('libart_lgpl' 'libstdc++' 'wxgtk>=2.8.1' 'libxxf86vm' 'expat' 'libxdamage' 'libice' 'ffmpeg')
source=(http://$_F_sourceforge_mirror.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-${pkgver}.tar.gz)
groups=('xlib-extra')
archs=('i686' 'x86_64')
sha1sums=('e0b7c2ee74051d4538548ab817f7075d71cf9467')
options=('scriptlet')

build()
{
	Fcd
	touch NEWS README || Fdie
	Fautoreconf
	Fbuild
}

# optimization OK
