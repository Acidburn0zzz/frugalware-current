pkgname=wxsvg
pkgver=1.0b10
pkgrel=2
pkgdesc="wxSVG is C++ library to create, manipulate and render SVG files"
_F_sourceforge_broken_up2date=1
Finclude sourceforge
url="http://www.wxsvg.org/"
depends=('libart_lgpl' 'libstdc++' 'wxgtk>=2.8.1' 'libxxf86vm' 'expat' 'libxdamage' 'libice' 'ffmpeg>=20080427-3')
source=(http://$_F_sourceforge_mirror.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-${pkgver}.tar.gz ffmpeg.patch)
groups=('xlib-extra')
archs=('i686' 'x86_64')
sha1sums=('e0b7c2ee74051d4538548ab817f7075d71cf9467' \
          '56cea1e8a0f80917fd777a8eec8212bef2a5bd74')
options=('scriptlet')

build()
{
	Fcd
	Fpatchall
	touch NEWS README || Fdie
	Fautoreconf
	Fmake
	Fmakeinstall
}

# optimization OK
