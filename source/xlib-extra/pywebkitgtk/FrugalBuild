pkgname=pywebkitgtk
pkgver=1.1.6
pkgrel=2
pkgdesc="PyWebKitGtk provides an API for developers to program WebKit/Gtk using Python."
depends=('webkit>=1.1.8-2' 'pygtk>=2.14.1-2' 'python>=2.6.1')
groups=('xlib-extra')
archs=('i686' 'x86_64')
Finclude googlecode python
options=('scriptlet')
