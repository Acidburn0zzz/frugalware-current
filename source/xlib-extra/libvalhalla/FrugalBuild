# Compiling Time: 0.06 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=libvalhalla
pkgver=1.0.1
pkgrel=1
pkgdesc="A tiny media scanner API."
depends=('ffmpeg')
url=http://libvalhalla.geexbox.org/
urldl=http://libvalhalla.geexbox.org/releases
source=($urldl/$pkgname-$pkgver.tar.bz2)
up2date="Flasttar $urldl"
groups=('xlib-extra')
archs=('i686')
Fconfopts="$Fconfopts --prefix=$Fdestdir/usr"
sha1sums=('07eea3135c4682bdc52384e30afec06c3d77a546')

build() {
	Fcd
	Fmake
	Fsed "$Fdestdir" "" libvalhalla.pc
	Fmakeinstall
}

# optimization OK
