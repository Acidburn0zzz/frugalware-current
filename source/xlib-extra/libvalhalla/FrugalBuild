# Compiling Time: 0.06 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=libvalhalla
pkgver=2.0.0
pkgrel=1
pkgdesc="A tiny media scanner API."
depends=('ffmpeg')
url=http://libvalhalla.geexbox.org/
urldl=http://libvalhalla.geexbox.org/releases
#source=($urldl/$pkgname-$pkgver.tar.bz2)
#use a snapshot the time to geebox release a new archive
#stable release don't works with new e17
source=(http://ftp.frugalware.org/pub/other/people/bouleetbil/sources/$pkgname-$pkgver.tar.gz)
up2date="Flasttar $urldl"
groups=('xlib-extra')
archs=('i686' 'x86_64')
Fconfopts="$Fconfopts --prefix=$Fdestdir/usr --mandir=$Fdestdir/usr/share/man"
sha1sums=('8c316dbf4e51ddc4634332582042c1299fca9e4c')

build() {
	Fcd
	Fmake
	Fsed "$Fdestdir" "" libvalhalla.pc
	Fmakeinstall
}

# optimization OK
