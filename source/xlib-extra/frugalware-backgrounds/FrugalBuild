# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=frugalware-backgrounds
pkgver=1.2
pkgrel=1
pkgdesc="Official wallpapers of Frugalware Linux."
url="http://ftp.frugalware.org/pub/other/artwork/frugalware-backgrounds/"
depends=()
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="$pkgver"
source=($url/$pkgname-$pkgver.tar.bz2)
sha1sums=('688f3b2715cf4406e3b9a8e9b35c680ebb347074')

build()	{
	Fcd
	#Gnome
	Fmkdir usr/share/gnome-background-properties
	Fmkdir usr/share/pixmaps/backgrounds/gnome/frugalware
	Ffilerel png/* usr/share/pixmaps/backgrounds/gnome/frugalware/
	Ffilerel xml/* usr/share/gnome-background-properties

	#XFCE
	Fmkdir usr/share/xfce4/backdrops
	Ffilerel png/* usr/share/xfce4/backdrops/

	#KDE
	Fmkdir usr/share/wallpapers/
	Ffilerel png/* usr/share/wallpapers/
}
