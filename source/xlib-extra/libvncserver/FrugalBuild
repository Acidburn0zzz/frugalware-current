pkgname=libvncserver
pkgver=0.8.2
pkgrel=1
pkgdesc="Library to create custom VNC servers"
url="http://libvncserver.sourceforge.net"
depends=('zlib' 'libjpeg' 'sdl' 'libx11' 'libxext' 'libxinerama' 'libxrandr' 'libxtrap' 'libxtst' 'libxfixes' 'libxdamage' 'inputproto')
groups=('xlib-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
source=(http://heanet.dl.sourceforge.net/sourceforge/libvncserver/LibVNCServer-$pkgver.tar.gz)
sha1sums=('b31c082b79b9e643fc54a9f89852899fcb6f7639')
_F_cd_path="LibVNCServer-$pkgver"

build()
{
	Fbuild
	
	# We don't want x11vnc here...
	Frm /usr/man
	Frm /usr/bin/x11vnc
}

# optimization OK
