pkgname=swfdec-mozilla
pkgver=0.5.0
pkgrel=1
pkgdesc="Mozilla plugin that uses the Swfdec library for playing SWF files in a browser capable of loading NS-Plugins"
url="http://swfdec.freedesktop.org/"
license="LGPL"
depends=('swfdec=0.5.0' 'firefox')
options=('scriptlet')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep -m1 'Swfdec [0-9]' | sed 's/.*Swfdec \(.*\) is.*/\1/'"
source=($url/download/$pkgname/0.5/$pkgname-$pkgver.tar.gz)
sha1sums=('9b912440774bf017703736da293b60c5b49f5cdc')

# optimization OK
