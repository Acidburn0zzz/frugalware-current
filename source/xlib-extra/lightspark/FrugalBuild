# Compiling Time: 0.27 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=lightspark
pkgver=0.4.8.1
pkgrel=2
pkgdesc='High performance flash player designed from scratch to be efficient on modern hardware'
url="https://launchpad.net/lightspark"
depends=('libboost>=1.46.1' 'ffmpeg>=0.8' 'curl' 'gtk+2-libs' 'ftgl' 'glew' 'libxml++' 'gdk-pixbuf2' 'pulseaudio>=0.9.22' 'dbus')
makedepends=('nasm' 'xulrunner' 'glproto' 'boost' 'llvm>=2.9')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
Finclude cmake gnome-scriptlet
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($url/trunk/$pkgname-0.4.8/+download/$pkgname-$pkgver.tar.gz)
sha1sums=('fd3bd975a7a0b120897bab75a29e5129a00258d9')

build() {
    Fcd
    CMake_build -DCMAKE_INSTALL_PREFIX=/usr \
    -DCOMPILE_PLUGIN=1 \
    -DCMAKE_BUILD_TYPE=Release \
    -DGNASH_EXE_PATH=/usr/bin/gtk-gnash
    Fbuild_gnome_scriptlet
}

# optimization OK

