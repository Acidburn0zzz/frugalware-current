pkgname=gnome-doc-utils
pkgver=0.5.2
pkgrel=1
pkgdesc="A collection of documentation utilities for GNOME"
url="http://www.gnome.org/"
depends=('libxslt' 'scrollkeeper')
makedepends=('intltool' 'perl-xml')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
nondevel=1
install=$pkgname.install
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
sha1sums=('a8b7da5896665d3a91f62f49a0aef956f30b6627' \
	  'cad7e8d04b21f4791484c61aa879b29ad34b2704')

build() {
	Fbuild --disable-scrollkeeper
}

