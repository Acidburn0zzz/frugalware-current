# Compiling time: 0.28 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=gnome-utils
pkgver=3.2.1
pkgrel=5
pkgdesc="GNOME utilities"
url="http://www.gnome.org/"
depends=('libxml2>=2.7.8' 'gtk+3' 'e2fsprogs' 'rarian' 'gsettings-desktop-schemas' \
	'desktop-file-utils' 'libgtop>=2.28.1' \
	'dbus-glib>=0.71' 'avahi-glib>=0.6.17' 'libcanberra-gtk')
makedepends=('intltool' 'gnome-doc-utils>=0.16.0' 'gtk-doc')
rodepends=('baobab')
groups=('gnome')
archs=('i686' 'x86_64')
replaces=('boabab')
_F_gnome_schemas=('/etc/gconf/schemas/gnome-search-tool.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_glib="y"
Finclude gnome gnome-scriptlet
Fconfopts="$Fconfopts --enable-ipv6 --disable-gtk-doc"
sha1sums=('27d4bc66806a866c189728ccbf4906c8c72ca636')

build() {
	Fbuild
	Frm usr/share/applications/mimeinfo.cache
	## Split baobab
	Frm usr/bin/baobab
	Frm usr/share/applications/baobab.desktop
	Frm usr/share/baobab
	Frm usr/share/gnome/help/baobab
	Frm usr/share/icons/hicolor/*/apps/baobab.png
	Frm usr/share/glib-2.0/schemas/org.gnome.baobab.gschema.xml
	Frm usr/share/omf/baobab
	Frm usr/share/man/man1/baobab.1.gz
	Fbuild_gnome_scriptlet
}

# optimization OK
