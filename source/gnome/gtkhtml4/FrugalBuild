# Compiling time: 1.09 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=gtkhtml4
_F_gnome_name="gtkhtml"
pkgver=3.91.0
pkgrel=2
pkgdesc="A lightweight HTML rendering/printing/editing engine"
depends=('gtk+3' 'libsoup>=2.32.0' 'gnome-icon-theme>=2.30.0' \
	'enchant' 'iso-codes' 'gconf')
makedepends=('intltool')
groups=('gnome' 'gnome-minimal')
archs=('i686' 'x86_64' 'ppc')
_F_gnome_git="y"
Finclude gnome
sha1sums=('30286248a304e457e193ed5e59c421a8b7e8e0a1')
Fconfopts="$Fconfopts --disable-deprecated-warning-flags --enable-gtk3"
_F_cd_path="$_F_gnome_name-$pkgver"
if [ "$_F_gnome_git" != "n" ]; then
	unset sha1sums
	source=($source gdktocairo.diff)
fi

build() {
	if [ "$_F_gnome_git" != "n" ]; then
		Funpack_scm
		Fcd $pkgname
		sh ./autogen.sh
	else
		Fcd	
	fi
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
}

# optimization OK
