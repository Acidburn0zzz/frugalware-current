# Last modified: Wed, 31 Aug 2005 12:21:00 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=atk
pkgver=1.10.2
pkgrel=2
pkgdesc="A library of accessibility functions used by GNOME"
url='http://www.gtk.org/'
depends=('glib2')
nondevel=1
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
sha1sums=('c9c0e86352c960409d361a03884c204f0fe5d044')

build() {
	Fbuild --enable-gtk-doc

	Fln libatk-1.0 usr/lib/libatk-1.0.so.0
	Fln libatk-1.0 usr/lib/libatk-1.0.so
}

# optimalization OK

