pkgdesc="A text widget adding syntax highlighting and more to GNOME"
depends=('gtk+3')
makedepends=('intltool' 'gtk-doc' 'libglade3' 'gobject-introspection')
groups=('gnome')
archs=('i686' 'x86_64' 'ppc')
Finclude gnome
_F_cd_path="$_F_gnome_name-$pkgver"
