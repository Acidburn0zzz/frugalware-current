# Compiling Time: 0.12 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=esd
_F_gnome_name=esound
pkgver=0.2.37
pkgrel=1
pkgdesc="Enlightened Sound Daemon"
url="http://www.tux.org/~ricdude/EsounD.html"
backup=('etc/esd.conf')
depends=('audiofile' 'alsa-lib')
groups=('gnome')
archs=('i686' 'x86_64')
Finclude gnome

build()
{
	Fcd esound-$pkgver
	Fbuild --with-audiofile --enable-alsa
}

sha1sums=('f5fd4a138598b01471907cd758077513c45a0dc4')

# optimization OK
