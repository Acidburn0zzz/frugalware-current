# Compiling Time: 0.12 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=esd
_F_gnome_name=esound
pkgver=0.2.36
pkgrel=1
pkgdesc="Enlightened Sound Daemon"
url="http://www.tux.org/~ricdude/EsounD.html"
backup=('etc/esd.conf')
depends=('audiofile' 'alsa-lib')
groups=('gnome')
archs=('i686' 'x86_64')
Finclude gnome
source=(http://ftp.gnome.org/pub/GNOME/sources/esound/$preup2date/esound-$pkgver.tar.gz)
sha1sums=('0533ec1c6fe9797a4d3f9b765f246141a1be6a2b')

build()
{
	Fcd esound-$pkgver
	Fbuild --with-audiofile --enable-alsa
}

