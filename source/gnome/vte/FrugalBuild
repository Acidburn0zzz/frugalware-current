# Last modified: Fri, 15 Apr 2005 17:07:54 +0200
# Compiling time: ~2 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=vte
pkgver=0.11.13
pkgrel=1
pkgdesc="Virtual Terminal Emulator"
url="http://www.gnome.org/"
depends=('gtk+2')
makedepends=('pygtk')
groups=('gnome' 'gnome-core')
archs=('i686')
nondevel=1
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
md5sums=('5eb73c7de433fb6e53ac4378df9d23b5')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-gtk-doc

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
