pkgname=vte
pkgver=0.13.6
pkgrel=1
pkgdesc="Virtual Terminal Emulator"
url="http://www.gnome.org/"
depends=('gtk+2>=2.10.0')
makedepends=('pygtk' 'gtk-doc' 'perl-xml')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
nondevel=1
Finclude gnome
Fconfopts="$Fconfopts --enable-gtk-doc"
sha1sums=('4f0a744f5a7d4c8f6719fc39fc6a9a62a0096767')

subpkgs=('vte-python')
subdescs=('Python bindings for VTE')
subdepends=("pygtk $pkgname=$pkgver")
subgroups=('gnome')
subarchs=('i686 x86_64')

build() {
	Fbuild
	Fsplit vte-python usr/lib/python*
}

# optimization OK
