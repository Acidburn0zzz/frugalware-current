pkgname=libsoup
pkgver=2.2.7
pkgrel=1
pkgdesc="An HTTP library implementation in C"
url="http://www.gnome.org/"
depends=('glib2' 'gnutls' 'libxml2' 'libgcrypt')
makedepends=('gtk-doc')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('a63893a31f7cf7d671e96b60aa232b672c9bd9fe')

build() {
	Fbuild --enable-ssl --enable-gtk-doc --enable-libgpg-error
}


