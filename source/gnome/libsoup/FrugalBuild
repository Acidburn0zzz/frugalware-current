pkgname=libsoup
pkgver=2.2.91
pkgrel=2
pkgdesc="An HTTP library implementation in C"
url="http://www.gnome.org/"
depends=('glib2' 'gnutls' 'libxml2' 'libgcrypt')
makedepends=('gtk-doc')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('f20002c123dbea831ca85848749dada16051e85f')
options=('scriptlet')

build() {
	Fbuild --enable-ssl --enable-gtk-doc --enable-libgpg-error
}

