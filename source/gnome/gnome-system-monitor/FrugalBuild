pkgname=gnome-system-monitor
pkgver=2.15.4
pkgrel=1
pkgdesc="A system monitor for GNOME"
url="http://www.gnome.org/"
depends=('libgnomeui' 'libgtop' 'libwnck' 'scrollkeeper' 'libgksu2' 'libsexy')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
_F_gnome_scrollkeeper="y"
_F_gnome_schemas=('/etc/gconf/schemas/gnome-system-monitor.schemas')
Finclude gnome gnome-scriptlet
options=('scriptlet')
sha1sums=('dacfadbd7768cdbf67ea00bbfbca027988d054a8')

build() {
	Fcd
	Fbuild_slice_scrollkeeper
	Fmake --disable-schemas-install --disable-scrollkeeper --enable-libgksu
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fbuild_gnome_scriptlet
}

# optimization OK
