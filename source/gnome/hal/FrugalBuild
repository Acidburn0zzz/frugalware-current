# Last modified: Thu, 23 Jun 2005 21:09:02 +0200
# Compiling time: 0.20 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=hal
pkgver=0.5.2
pkgrel=1
pkgdesc="Hardware Abstraction Layer"
url="http://freedesktop.org/wiki/Software_2fhal"
depends=('dbus>=0.33' 'libcap' 'python' 'libusb')
groups=('gnome')
archs=('i686' 'x86_64')
makedepends=('pkgconfig')
install=$pkgname.install
up2date="lynx -dump http://freedesktop.org/~david/dist/|grep tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://freedesktop.org/~david/dist/$pkgname-$pkgver.tar.gz \
	rc.hald)
md5sums=('3b351822ba359669646026013a3d5a03' \
	'd33abc8579ccbf61cbbda83b35a0091f')

build()
{
	Fconf --sysconfdir=/etc --localstatedir=/var \
		--with-pid-file=/var/run/hald.pid \
		--with-system-pid-file=/var/run/hald.pid \
		--with-hal-user=daemon --with-hal-group=daemon \
		--enable-sysfs-carrier --enable-hotplug-map \
		--enable-pcmcia-support

	make clean || return 1
	make || return 1

	Fmakeinstall
	Frcd hald
}

# vim: ft=sh
