pkgname=gnome-panel
pkgver=3.5.91
pkgrel=1
pkgdesc="GNOME panel and core applets"
depends=('libxml2>=2.7.8' 'gnome-desktop>=3.5.3' 'gnome-menus>=3.5.3' \
	 'libwnck>=3.0.0'  'rarian>=0.8.0' 'dbus-glib>=0.71' 'avahi-glib>=0.6.17' 'librsvg>=2.35.1' \
	 'libcanberra-gtk' 'libkrb5' 'openssl>=1.0.0-3' 'libgweather>=3.5.1' 'evolution-data-server>=3.5.3' \
	'networkmanager>=0.9.5.95' 'dconf' 'telepathy-glib')
makedepends=('intltool' 'gtk-doc>=1.9' 'gnome-doc-utils>=0.14.0' 'krb5' 'gobject-introspection' 'itstool')
groups=('gnome' 'gnome-minimal')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
_F_gnome_scrollkeeper="y"
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_gnome_doc="y"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
sha1sums=('963e43463e34454ad168a013950b557d3b1609f2')
replaces=('libpanelappletmm' 'deskbar-applet' 'gnome-globalmenu' 'giplet' 'hamster-applet' 'webilder' 'mintmenu' 'lock-keys-applet')
provides=('deskbar-applet')

build() {
	Fcd
	Fbuild_slice_scrollkeeper
	Fmake --disable-schemas-install --enable-gtk-doc --disable-scrollkeeper \
		--with-in-process-applets=clock,notification-area,wncklet --enable-eds --disable-schemas-compile
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fbuild_gnome_scriptlet
	_F_gnome_split_doc
}

# optimization OK
