# Last modified: Tue, 07 Feb 2006 19:02:50 +0100
# Compiling time: 0.44 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gnome-panel
pkgver=2.12.3
pkgrel=1
pkgdesc="GNOME panel"
url="http://www.gnome.org/"
depends=('gnome-desktop' 'gnome-menus' 'libwnck' 'evolution-data-server' 'scrollkeeper')
makedepends=('intltool' 'gtk-doc' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
source=(${source[@]} 00-$pkgname-2.12.0-firefox-for-default.patch \
	$pkgname.install)
sha1sums=('22e1dc46d16980d6a90f9c4d89296232da2e43aa' \
	  '24cd99ace3e9d43bb6367b6014c239e9c9321c35')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fpatchall
	Fmake --disable-schemas-install --enable-eds --enable-gtk-doc --disable-scrollkeeper
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimalization OK
