_F_gnome_iconcache="y"
_F_gnome_desktop="y"
Finclude gnome gnome-scriptlet
sha1sums=('009a89dfe2a492317c268b3bc19a4f0a1b735052')

build() {
	Fcd
	Fbuild_slice_scrollkeeper
	Fmake --disable-schemas-install --enable-eds=no --enable-gtk-doc --disable-scrollkeeper
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fbuild_gnome_scriptlet
}

