# Last modified: Tue, 28 Jun 2005 13:57:03 +0200
# Compiling time: 0.44 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gnome-panel
pkgver=2.10.2
pkgrel=1
pkgdesc="GNOME panel"
url="http://www.gnome.org/"
depends=('gnome-desktop' 'gnome-menus' 'libwnck' 'evolution-data-server' 'scrollkeeper')
makedepends=('intltool' 'gtk-doc')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	00-$pkgname-2.10.0-notification-area.patch \
	$pkgname.install)
md5sums=('c1756cac74a4c8b45ce3b9a884515baa' \
	'5b4e880b617b4ecddda3f5f118d7c905' \
	'd6f379eb32f79b9cead6e5258b664a44')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fpatchall || return 1
	Fmake --sysconfdir=/etc --disable-schemas-install --enable-eds --enable-gtk-doc || return 1
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1 || return 1
}

# vim: ft=sh
