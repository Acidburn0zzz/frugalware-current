pkgname=gnome-panel
pkgver=2.14.2
pkgrel=1
pkgdesc="GNOME panel"
url="http://www.gnome.org/"
depends=('gnome-desktop' 'gnome-menus' 'libwnck' 'gnome-vfs>=2.14.2' 'evolution-data-server>=1.6.2' 'scrollkeeper')
makedepends=('intltool' 'gtk-doc' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
options=('scriptlet')
sha1sums=('da7d3147e808a9feaee1a5c8df7b53d07dbe6c5b')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fsed "epiphany.desktop" "firefox.desktop" gnome-panel/panel-default-setup.entries
	if [ "$CARCH" != "x86_64" ]; then
	    Fmake --disable-schemas-install --enable-eds --enable-gtk-doc --disable-scrollkeeper
	else
	    Fmake --disable-schemas-install --enable-eds --disable-scrollkeeper
	fi
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimization OK
