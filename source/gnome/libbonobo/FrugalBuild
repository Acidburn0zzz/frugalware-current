pkgname=libbonobo
pkgver=2.8.1
pkgrel=4
pkgdesc="GNOME CORBA framework"
url="http://www.gnome.org/"
depends=('orbit2' 'libxml2' 'perl')
makedepends=('intltool' 'gtk-doc' 'popt')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install libbonobo-search-path-fix.patch)
md5sums=('54f863c20016cf8a2cf25056f6c7cda7' \
	'ffdacf0479dfd17291a9fa56917c76c6' '38c369014aba3e572c513b10f1a7c370')

build() {
	Fbuild --sysconfdir=/etc --localstatedir=/var --enable-gtk-doc || return 1
}

