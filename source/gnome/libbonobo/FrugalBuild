# Last modified: Thu, 17 Mar 2005 15:10:31 +0100
# Compiling time: ~3 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libbonobo
pkgver=2.8.1
pkgrel=3
pkgdesc="GNOME CORBA framework"
url="http://www.gnome.org/"
depends=('orbit2' 'libxml2' 'perl')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('54f863c20016cf8a2cf25056f6c7cda7' \
	'ffdacf0479dfd17291a9fa56917c76c6')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
