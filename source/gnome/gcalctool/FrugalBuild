# Last modified: Wed, 18 Jan 2006 17:16:47 +0100
# Compiling time: 0.16 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gcalctool
pkgver=5.7.26
pkgrel=1
pkgdesc="A scientific calculator for GNOME"
url="http://www.gnome.org/"
depends=('libgnomeui' 'scrollkeeper')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
nondevel=1
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
sha1sums=('4c7553f22a448cd774f07204b627e73d4bae6e13')

build()
{
	Fcd
	find . -name Makefile.in \
		-exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	[ -f omf.make ] && sed -i -e 's/-scrollkeeper-update.*//' omf.make
	Fmake --disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# vim: ft=sh

# optimalization OK
