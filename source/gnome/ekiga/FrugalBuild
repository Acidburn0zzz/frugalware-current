pkgname=ekiga
pkgver=2.0.2
pkgrel=1
pkgdesc="Ekiga is an open source VoIP and Telephony client"
url="http://ekiga.org"
groups=('gnome')
archs=('i686' 'x86_64')
depends=('pwlib' 'opal' 'dbus' 'gnome-desktop' 'evolution-data-server' 'avahi-glib')
makedepends=('intltool' 'gnome-doc-utils')
options=('scriptlet')
Finclude gnome
sha1sums=('c440669c8f4a0bfa1739cadc1e6285c9cc81c426')
install=ekiga.install

build() {
	Fmake --enable-dbus --enable-avahi --disable-schemas-install || return 1
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	rm -Rf $Fdestdir/var
}

# optimization OK
