pkgname=ekiga
pkgver=2.0.1
pkgrel=1
pkgdesc="Ekiga is an open source VoIP and Telephony client"
url="http://ekiga.org"
groups=('gnome')
archs=('i686' 'x86_64')
depends=('pwlib' 'opal' 'dbus' 'gnome-desktop' 'evolution-data-server')
makedepends=('intltool' 'gnome-doc-utils')
options=('scriptlet')
Finclude gnome
sha1sums=('47947fccfc7a432169ebb3669739cbaf0d2ff9b4')
install=ekiga.install

build() {
	Fmake --enable-dbus --disable-avahi --disable-schemas-install || return 1
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	rm -Rf $Fdestdir/var
}

# optimalization OK
