# Last modified: Thu, 10 Mar 2005 15:05:19 +0100
# Compiling time: ~11 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gst-plugins
pkgver=0.8.8
pkgrel=1
pkgdesc="Plugins for GStreamer"
url="http://gstreamer.freedesktop.org/"
depends=('python' 'gconf' 'gstreamer' 'gtk+2' 'alsa-lib' 'audiofile' \
	'cdparanoia' 'libdvdread' 'libdvdnav' 'esd' 'faac' 'faad2' 'flac' \
	'gnome-vfs' 'lame' 'libdv' 'libmng' 'libmad' 'libid3tag' 'libmikmod' \
	'mjpegtools' 'libmusicbrainz' 'libraw1394' 'sdl' 'libsndfile' \
	'libvorbis' 'libtheora')
#extra_depends=('liboil' 'a52dec' 'aalib' 'audioresample' 'cairo' 'cdaudio' \
#'dirac-pic' 'directfb' 'divx' 'dtsdec' 'gsm' 'hermes' 'ivorbisdec' \
#'jack' 'ladspa' 'libcaca' 'lcs' 'libfame' 'libmms' 'librfb' 'libvisual' \
#'libmpeg2' 'musepack' 'polyplib' 'shout' 'sidplay' 'speex' 'swfdec' 'xvid' \
#'amrnb')
groups=('gnome' 'gnome-core')
archs=('i686')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('4f6e7e730fa674ecd6ec713f937b8acb' \
	'82702aa4127243797983ed56f366d945')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc --disable-schemas-install \
		--disable-arts --disable-artsc

	make || return 1

	make GCONF_DISABLE_SCHEMA_INSTALL=1 DESTDIR=$startdir/pkg install
}

# vim: ft=sh
