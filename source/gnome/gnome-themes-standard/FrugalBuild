options+=('asneeded')

pkgname=gnome-themes-standard
pkgver=3.7.91
pkgrel=1
pkgdesc="Default standard themes for GNOME3"
url="http://www.gnome.org/"
depends=('libxml2>=2.7.8' 'gtk+3>=3.7.2' 'librsvg>=2.37.0' 'cantarell-fonts' 'gtk+2')
makedepends=('perl-xml-parser' 'icon-naming-utils' 'intltool')
groups=('gnome' 'gnome-minimal')
archs=('i686' 'x86_64')
_F_gnome_git="n"
_F_gnome_ext=".tar.xz"
_F_gnome_devel="y"
Finclude gnome
#source+=(gtkrc settings.ini)
sha1sums=('8eeeb62b37bd7c2de2372077b4b8f3021690113b')

if [ "$_F_gnome_git" != "n" ]; then
        unset sha1sums
fi

build() {
	if [ "$_F_gnome_git" != "n" ]; then
		Funpack_scm
		Fcd $pkgname
		sh ./autogen.sh
	else
		Fcd

	fi
	Fbuild
#               Fmkdir /etc/gtk-3.0
#                Fcp settings.ini etc/gtk-3.0/
#                Fmkdir /etc/gtk-2.0
#                Fcp gtkrc etc/gtk-2.0/
}

# optimization OK
