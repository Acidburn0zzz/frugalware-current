pkgname=gnome-documents
pkgver=0.3.4
pkgrel=2
pkgdesc="Document manager for gnome"
depends=('evince' 'gjs' 'gnome-online-accounts' 'gtk+3' 'liboauth' 'clutter-gtk>=1.0.2-3' 'libgdata' \
	'gnome-desktop' 'icu4c>=4.8' 'libtracker' 'tracker')
makedepends=('gobject-introspection' 'intltool' 'gnome-common')
groups=('gnome')
archs=('i686' 'x86_64')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_gnome_glib="y"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
source=($source patch_for_tracker.diff)
sha1sums=('3cedb1dd3bfd51623d0f17e1ac843bb1056a9517' \
          '88e10efb7ad6246f9544d68268f391c16d36c0a1')
replaces=('referencer')

build() {
	Fpatchall
	Fcd
	./autogen.sh
	Fmake
	Fmakeinstall
	Fbuild_gnome_scriptlet
}
# optimization OK
