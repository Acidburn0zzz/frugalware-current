pkgname=startup-notification
pkgver=0.7
pkgrel=1
pkgdesc="tells the desktop enviroment when an apps is done starting up"
url="http://freedesktop.opg/Software/startup-notification"
depends=('x')
up2date=`lynx -dump http://freedesktop.org/Software/startup-notification/releases|tail -n 1|tr -s ' '|cut -d ' ' -f 3|cut -d - -f 4|cut -b '1-3'`
source=($url/releases/$pkgname-$pkgver.tar.gz)
md5sums=('f79ce6d1b96785563cffa4ef8de118f5')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}
