pkgname=libxklavier
pkgver=3.1
pkgrel=1
pkgdesc="Utility library to make XKB stuff easier"
url="http://gswitchit.sourceforge.net/"
depends=('libxkbfile' 'libxml2' 'libxt')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
options=('scriptlet')
archs=('i686' 'x86_64')
source=(http://heanet.dl.sourceforge.net/sourceforge/gswitchit/$pkgname-$pkgver.tar.gz)
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=319|grep '$pkgname'|grep 'Release Notes'|sed 's/[^]]*][^]]*]\([^ ]*\) .*/\1/;s/-/_/g;q'"
sha1sums=('7fc0ddc2e4470b26de2783ab65bca5a8a101c9fe')
Fconfopts="$Fconfopts --enable-doxygen --with-xkb-base=/usr/share/X11/xkb --enable-xkb-support --enable-xmm-support"

