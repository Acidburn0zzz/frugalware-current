pkgname=pango
pkgver=1.8.2
pkgrel=1
pkgdesc="A library for layout and rendering of text"
url="http://www.gtk.org/"
depends=('x' 'glib2')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('f5b5da7a173f0566d8217ec112fde993' 'abf5b893d38aa1e7b643b543a3d18433')

build()
{
	Fbuild --enable-gtk-doc
}

