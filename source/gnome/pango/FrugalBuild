pkgname=pango
pkgver=1.12.3
pkgrel=1
pkgdesc="A library for layout and rendering of text"
url="http://www.gtk.org/"
depends=('cairo>=1.0.2' 'glib2' 'libxft' 'libpng' 'perl')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
install=$pkgname.install
options=('scriptlet')
Finclude gnome
sha1sums=('ad493c4560c0ffd9dcdb8a1724d5bff058ef112c')

build()
{
	Fbuild --enable-gtk-doc
}

