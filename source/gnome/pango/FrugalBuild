pkgname=pango
pkgver=1.12.2
pkgrel=1
pkgdesc="A library for layout and rendering of text"
url="http://www.gtk.org/"
depends=('cairo>=1.0.2' 'glib2' 'libxft' 'libpng' 'perl')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
install=$pkgname.install
options=('scriptlet')
Finclude gnome
sha1sums=('309a55a5740dc25e8a86baf91b084761e626aa7b')

build()
{
	Fbuild --enable-gtk-doc
}

