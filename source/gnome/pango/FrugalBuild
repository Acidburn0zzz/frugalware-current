pkgname=pango
pkgver=1.10.4
pkgrel=1
pkgdesc="A library for layout and rendering of text"
url="http://www.gtk.org/"
depends=('cairo>=1.0.2' 'glib2' 'libxft' 'libpng' 'perl')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
sha1sums=('57403adea41504c5a0e9576b102cb4e8999fb4a3')

build()
{
	Fbuild --enable-gtk-doc
}


