pkgname=pango
pkgver=1.10.2
pkgrel=2
pkgdesc="A library for layout and rendering of text"
url="http://www.gtk.org/"
depends=('cairo>=1.0.2' 'glib2' 'libxft' 'libpng' 'perl')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
#source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
source=(http://ftp.gtk.org/pub/gtk/v2.8/$pkgname-$pkgver.tar.bz2)
# NOTE: Temporary hack! ^^^ (because gnome mirror did not update at packaging time)
sha1sums=('dc67f60ed5840e0f9476b65e091a0a1dfc56811f')

build()
{
	Fbuild --enable-gtk-doc
}

