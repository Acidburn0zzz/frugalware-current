pkgname=libgsf
pkgver=1.12.2
pkgrel=1
pkgdesc="GNOME Structured File Library"
url="http://www.gnome.org/"
depends=('gnome-vfs')
makedepends=('gtk-doc' 'perl-xml')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
nondevel=1
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
sha1sums=('f19722739c2258afb8e7f2b5b400a648b31f25b3')

build()
{
	Fbuild --enable-gtk-doc --with-bz2 --with-gnome --with-zlib
}

