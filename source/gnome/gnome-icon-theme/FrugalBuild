# Compiling time: 0.25 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=gnome-icon-theme
pkgver=2.29.0
pkgrel=2
pkgdesc="Default icon theme for GNOME"
url="http://www.gnome.org/"
depends=('hicolor-icon-theme')
makedepends=('perl-xml-parser' 'icon-naming-utils>=0.8.2' 'intltool')
groups=('gnome' 'gnome-minimal')
archs=('i686' 'x86_64' 'ppc')
Finclude gnome
source=($source gnome-icon-theme.pc)
sha1sums=('2f6ec1550d2d1033acb75f1b29da2cfba6377b31' \
          '2920488af31c61fb7444c820d000954d453a9b50')

build() {
	Fbluild
	Fmkdir usr/lib/pkgconfig
	Fcp gnome-icon-theme.pc usr/lib/pkgconfig/
}
