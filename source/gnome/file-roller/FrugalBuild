pkgname=file-roller
pkgver=2.26.2
pkgrel=2
pkgdesc="Archive manager utility for GNOME"
depends=('nautilus>=2.26.2-2' 'rarian' 'desktop-file-utils')
makedepends=('intltool' 'gnome-doc-utils>=0.14.0')
groups=('gnome' 'gnome-minimal')
archs=('i686' 'x86_64' 'ppc')
_F_gnome_schemas=('/etc/gconf/schemas/file-roller.schemas')
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude gnome gnome-scriptlet
sha1sums=('4989d1e2d5c7f13e9e5612625ae9ea5770f551cb')

build(){
	Fcd
	# Fix intltoolize broken file
	sed "s:'\^\$\$lang\$\$':\^\$\$lang\$\$:g" -i po/Makefile.in.in || Fdie
	Fautoreconf
	Fbuild
	Fbuild_gnome_scriptlet
}

# optimization OK
