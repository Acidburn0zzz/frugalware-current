# Last modified: Wed, 05 Oct 2005 20:11:28 +0200
# Compiling time: 0.19 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=nautilus-cd-burner
pkgver=2.12.1
pkgrel=1
pkgdesc="An easy to use CD/DVD burning package for Nautilus"
url="http://www.gnome.org/"
depends=('nautilus' 'cdrtools')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
sha1sums=('7b389e994d3ff8ae2605df307d510443002e3faf')

build()
{
	Fmake --sysconfdir=/etc --disable-schemas-install --enable-hal || return 1
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# vim: ft=sh

# optimalization OK
