# Last modified: Wed, 13 Apr 2005 12:52:05 +0200
# Compiling time: ~5 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gal
pkgver=2.4.2
pkgrel=1
pkgdesc="GNOME Application Libraries"
url="http://www.gnome.org/"
depends=('libgnomeprintui' 'libgnomeui')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
md5sums=('70e07fde659f0553ba56caeae4f51908')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
