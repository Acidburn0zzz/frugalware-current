# Last modified: Mon, 13 Jun 2005 15:38:09 +0200
# Compiling time: ~8 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>
# Contributor: Shrift <shrift@frugalware.org>

pkgname=gtkmm
pkgver=2.6.3
pkgrel=1
pkgdesc="C++ interface for GTK+2"
url="http://www.gnome.org/"
depends=('glibmm' 'gtk+2')
groups=('gnome' 'gnome-core')
archs=('i686')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
md5sums=('fc398aab107b5149bf91426022cd821e')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-examples --disable-demos

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
