pkgname=gtkmm
pkgver=2.10.0
pkgrel=1
pkgdesc="C++ interface for GTK+2"
url="http://www.gnome.org/"
depends=('glibmm' 'gtk+2' 'cairomm')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('9818f49355535dac30b9908d215e2153120324ea')

build()
{
	Fcd
	# I *can't* see any reason *why* .12 is needed
	# 2 commits till .10 ( makefile fix and a typo ) && one API changes _after_ gtkmm relesed and
	# anyway is just a int name change is a function foo_bar() -> foo_bar_baz()
	Fsed 'gtkmm_min_cairomm_version=1.1.12' \
	     'gtkmm_min_cairomm_version=1.1.10' configure
	Fbuild --disable-examples --disable-demos
}

# optimization OK

