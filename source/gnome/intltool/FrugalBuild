pkgname=intltool
pkgver=0.31.3
pkgrel=1
pkgdesc="Contains scripts and autoconf magic for internationalizing various kinds of data files."
url="http://www.gnome.org/"
depends=('glibc' 'perl' 'popt' 'expat' 'perl-xml')
. ../up2date.nongnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
md5sums=('e1b8789f7a023657d827189f3602aa13')

build() {
	cd $startdir/src/$pkgname-$pkgver
	# creates missing install.sh
	aclocal && automake -acf && autoconf
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
