pkgname=yelp
pkgver=2.12.2
pkgrel=2
pkgdesc="The default help browser for GNOME"
url="http://www.gnome.org/"
depends=('libgnomeui' 'libxslt' 'firefox>=1.5')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
sha1sums=('352114592194bb867c15c97b7599bbcf55344528')

build() {
	Fmake --disable-schemas-install --enable-man --enable-info \
		--with-mozilla=firefox
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}


# optimalization OK
