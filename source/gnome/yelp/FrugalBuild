# Last modified: Mon, 18 Jul 2005 23:51:47 +0200
# Compiling time: ~0.14 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=yelp
pkgver=2.10.0
pkgrel=4
pkgdesc="The default help browser for GNOME"
url="http://www.gnome.org/"
depends=('libgnomeui' 'libxslt' 'firefox')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('326f85c8c0fd944e782a37b0589036c5' \
	'6419e75df7a4ae46d547d616e0de5ab7')

build() {
	Fmake --disable-schemas-install --enable-man \
		--with-mozilla=firefox || return 1
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1 || return 1
}

# vim: ft=sh

# optimalization OK
