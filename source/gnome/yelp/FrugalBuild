pkgname=yelp
pkgver=2.14.1
pkgrel=1
pkgdesc="The default help browser for GNOME"
url="http://www.gnome.org/"
depends=('libgnomeui' 'libxslt' 'firefox>=1.5' 'libxml2' 'gtk+2' 'startup-notification')
makedepends=('intltool' 'gnome-doc-utils' 'libgnomeprintui' 'libglade' 'gnome-vfs')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome

build() {
	Fmake --disable-schemas-install --enable-man --enable-info \
		--with-mozilla=firefox
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}


# optimalization OK
sha1sums=('604b85ea7e13738dc1c812adf644504980f26476')
