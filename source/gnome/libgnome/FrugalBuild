# Last modified: Fri, 08 Jul 2005 17:22:03 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libgnome
pkgver=2.10.1
pkgrel=1
pkgdesc="Common libraries for GNOME"
url="http://www.gnome.org/"
depends=('esd' 'gnome-vfs' 'gtk+2-engines-clearlooks')
makedepends=('intltool' 'gtk-doc')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	00-$pkgname-2.10.0-clearlooks.patch)
md5sums=('dfb1a9b5fd25da8680a166c83ce0b6a8' 'ead608828844b1d0832c8a12fcb1d4bf')

build() {
	Fcd
	Fpatch 00-$pkgname-2.10.0-clearlooks.patch || return 1
	Fmake --disable-schemas-install --enable-gtk-doc || return 1
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# vim: ft=sh

# optimalization OK
