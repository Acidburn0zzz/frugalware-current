pkgname=libglade
pkgver=2.4.0
pkgrel=1
pkgdesc="libglade is a small library that allows a program to load its user interface from an XML description at runtime"
url="http://www.gnome.org"
depends=('glib2' 'gtk+2' 'libxml2' 'pango')
up2date=`lynx -dump http://mirror.etf.bg.ac.yu/gnome/platform/2.8/2.8.0/sources/|grep libglade|tail -n 1|cut -d - -f 2|cut -b '1-5'`
source=(http://mirror.etf.bg.ac.yu/gnome/platform/2.8/2.8.0/sources/$pkgname-$pkgver.tar.gz)
md5sums=('f6e01e8aa648e3223027e74e695d73e0')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}

