# Last modified: Sun, 06 Feb 2005 15:16:37 +0100
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libidl
realname=libIDL
pkgver=0.8.5
pkgrel=1
pkgdesc="A library for creating trees of CORBA IDL files"
url="http://www.gnome.org/"
depends=('glib2')
groups=('gnome' 'gnome-core')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/libIDL/$preup2date/libIDL-$pkgver.tar.bz2)
md5sums=('c63f6513dc7789d0575bea02d62d58d7')

build() {
	cd $startdir/src/libIDL-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
