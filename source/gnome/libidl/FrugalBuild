# Last modified: Wed, 01 Jun 2005 17:19:14 +0000
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libidl
realname=libIDL
pkgver=0.8.5
pkgrel=3
pkgdesc="A library for creating trees of CORBA IDL files"
url="http://www.gnome.org/"
depends=('glib2')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/libIDL/$preup2date/libIDL-$pkgver.tar.bz2)
md5sums=('c63f6513dc7789d0575bea02d62d58d7')

build() {
	cd $startdir/src/libIDL-$pkgver
	Fmake || return 1
	Fmakeinstall || return 1
}

