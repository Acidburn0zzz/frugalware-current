# Compiling time: ~5 minutes
# Contributor: Laszlo Dvornik <dvornik@gnome.hu>
# Maintainer: Adam Zlehovszky

pkgname=gthumb
pkgver=2.6.5
pkgrel=1
pkgdesc="Image browser and viewer for GNOME"
url="http://gthumb.sourceforge.net/"
depends=('libgnomeui' 'libgnomeprintui' 'libgphoto2' 'scrollkeeper' \
	'desktop-file-utils')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('726d88dcd16c7d895e7f5de86873f3a6' '5f2714bf1580d323b0c9e05a9c5a2919')

build() {
	cd $startdir/src/$pkgname-$pkgver
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	./configure --prefix=/usr --sysconfdir=/etc --disable-schemas-install

	make || return 1

	make GCONF_DISABLE_SCHEMA_INSTALL=1 DESTDIR=$startdir/pkg install
}

# vim: ft=sh
