pkgname=gthumb
pkgver=2.6.6
pkgrel=1
pkgdesc="Image browser and viewer for GNOME"
url="http://gthumb.sourceforge.net/"
depends=('libgnomeui' 'libgnomeprintui' 'libgphoto2' 'scrollkeeper' \
	'desktop-file-utils')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('498d2729805e335c850f418b7994df66' '5f2714bf1580d323b0c9e05a9c5a2919')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	[ -f omf.make ] && Fsed "-scrollkeeper-update.*" "" omf.make
	Fmake --disable-schemas-install || return 1
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1 || return 1
}

# vim: ft=sh

# optimalization OK
