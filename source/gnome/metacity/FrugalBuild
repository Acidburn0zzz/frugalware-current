pkgname=metacity
pkgver=2.12.1
pkgrel=1
pkgdesc="A window manager for GNOME"
url="http://www.gnome.org/"
depends=('startup-notification' 'gconf' 'metacity-themes-clearlooks')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	00-$pkgname-2.8.8-luxi.patch)
sha1sums=('4a5d1cca6e4f401617f29b6f398c7236bf876d77' \
          '3b72ae23fb70b0821beb7e976332933a7092be74')

build()
{
	Fpatchall
	Fmake --sysconfdir=/etc --disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

