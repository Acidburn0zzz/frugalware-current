pkgname=metacity
pkgver=2.16.1
pkgrel=1
pkgdesc="A window manager for GNOME"
url="http://www.gnome.org/"
depends=('startup-notification' 'gconf' 'gnome-themes')
makedepends=('intltool')
replaces=('metacity-theme-simplebox-custom')
provides=('metacity-theme-simplebox-custom')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/metacity.schemas')
Finclude gnome gnome-scriptlet
source=(${source[@]} $pkgname-2.15.21-frugalware_defaults.patch \
	http://ftp.frugalware.org/pub/other/people/alex/Simplebox-custom-1.5.1.tar.bz2)
sha1sums=('160c61e51f10311c53bc123d2d4d7f07d286d98d' \
	  '7392c320c1831a22f9e5e3248704178b7517748d' \
	  '2ed4e29d5563cb74219230f2a92dbbf4bb7c5428')

build() {
	Fbuild
	cd $Fsrcdir
	rm Simplebox-custom-1.5/metacity-1/metacity-theme-1.xml~
	Fmkdir /usr/share/themes
	cp -Rad Simplebox-custom-1.5 $Fdestdir/usr/share/themes/
	Fbuild_gnome_scriptlet
}

# optimization OK
