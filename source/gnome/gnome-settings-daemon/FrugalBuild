pkgname=gnome-settings-daemon
pkgver=3.20.0
pkgrel=1
pkgdesc="Utility library for accessing gnome-settings-daemon over DBUS"
depends=('libxml2>=2.9.2' 'gnome-desktop>=3.20.0' 'libxxf86misc' 'gst1-plugins-base>=1.7.91' 'pulseaudio>=7.1' \
	'libgnomekbd>=3.6.0' 'libnotify' 'libcanberra-gtk' 'libcanberra-pulseaudio' 'gsettings-desktop-schemas>=3.20.0' \
	'alsa-lib' 'libcups' 'upower' 'nss' 'colord' 'libxtst' 'ibus' 'libgudev'  'libwacom' 'xf86-input-wacom' \
	'librsvg' 'geocode-glib>=3.20.0' 'libgweather>=3.20.0' 'geoclue2' 'networkmanager>=1.1.90')
makedepends=('intltool' 'gnome-doc-utils>=0.14.0' 'cups' 'krb5' 'docbook-xsl')
rodepends=('xkbcomp')
groups=('gnome' 'gnome-minimal')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
_F_gnome_iconcache="y"
_F_gnome_doc="y"
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
sha1sums=('17f0621bf3190fe5ad930d563e88ba18cc6d4456')

Fconfopts="${Fconfopts[@]} --disable-static \
		--disable-schemas-compile \
		--enable-systemd"

build() {
	Fcd
	Fbuild
	Fbuild_gnome_scriptlet
	Fmkdir etc/profile.d
	echo 'export GSETTINGS_BACKEND="dconf"' > $Fdestdir/etc/profile.d/gsettings-dconf.sh
	chmod +x $Fdestdir/etc/profile.d/gsettings-dconf.sh || Fdie
	_F_gnome_split_doc
}

# optimization OK
