pkgname=gnome-settings-daemon
pkgver=2.91.8
pkgrel=2
pkgdesc="Utility library for accessing gnome-settings-daemon over DBUS"
depends=('libgnomekbd>=2.91.0' 'esd' 'gst-plugins-base>=0.10.22-2' 'libgnomeui' 'libxxf86misc' \
	'gnome-desktop>=2.91.0' 'alsa-lib' 'pulseaudio' 'gsettings-desktop-schemas' 'libxtst' 'libnotify')
makedepends=('intltool' 'gtk-doc>=1.11' 'gnome-doc-utils>=0.14.0')
groups=('gnome')
archs=('i686' 'x86_64' 'ppc')
_F_gnome_glib="y"
_F_gnome_scrollkeeper="y"
_F_gnome_iconcache="y"
Finclude gnome gnome-scriptlet
sha1sums=('8a1bb764d2918f6b7870eb465eadc24d2df5944e')

build() {
	Fcd
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall
	Fbuild_gnome_scriptlet
}

