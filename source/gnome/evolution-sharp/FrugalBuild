pkgname=evolution-sharp
pkgver=0.11.1
pkgrel=1
pkgdesc="Mono bindings for evolution."
url="http://ftp.gnome.org/pub/GNOME/sources/evolution-sharp/"
depends=('gtk2-sharp' 'atk' 'libsm' 'evolution')
makedepends=('pkgconfig')
Finclude gnome
groups=('gnome' 'gnome-core')
archs=('i686')
## ehh weird :-P
last="`lynx -dump $url|grep 0.[0-9]|sort -n -r|grep -m1 0.[0-9]|sed 's|.*p/||g'|sed 's|/||g'`"
up2date="lynx -dump $url/$last|sort -r|grep -m1 '.gz'|sed 's/.*-\(.*\).diff.*/\1/'"
source=($url/$last/$pkgname-$pkgver.tar.bz2)
sha1sums=('3f2b46fcfac5dd124146995a8a00708efcdda248')

build()
{
	Fcd
	export MONO_SHARED_DIR=$startdir/pkg/weird
	mkdir -p $MONO_SHARED_DIR
	Fbuild
	rm -rf $MONO_SHARED_DIR
}


# optimization OK
