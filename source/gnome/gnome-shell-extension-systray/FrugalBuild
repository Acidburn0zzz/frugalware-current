# Compiling Time: 0.01 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=gnome-shell-extension-systray
pkgver=0.1
pkgrel=2
pkgdesc="Enable some systray icons to status icons gnome-shell (parcellite, frugalware-tweak...)"
url="http://vega.frugalware.org"
depends=()
groups=('gnome')
rodepends=('gnome-shell>=3.0.2')
archs=('i686' 'x86_64' 'ppc')
up2date="Flasttar http://ftp.frugalware.org/pub/other/people/bouleetbil/frugal-tweak/releases/"
source=(http://ftp.frugalware.org/pub/other/people/bouleetbil/frugal-tweak/releases/$pkgname-$pkgver.tar.bz2)
sha1sums=('bbf676e109e8f709b896d0e28c73ee7811505baf')

build()	{
	Fmkdir usr/share/gnome-shell/extensions/tools-icons@frogdev.org/
	Fcd icons
	Fsed "3.0.1" "3.0" metadata.json
	Ffilerel extension.js usr/share/gnome-shell/extensions/tools-icons@frogdev.org/extension.js
	Ffilerel metadata.json usr/share/gnome-shell/extensions/tools-icons@frogdev.org/metadata.json
}
