# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=gnome-shell-extension-frugalware-logo
pkgver=0.1
pkgrel=1
pkgdesc="Simple Gnome shell extension to add the Frugalware logo to the shell."
url="http://frugalware.org"
depends=()
groups=('gnome')
archs=('i686' 'x86_64' 'ppc')
up2date="Flasttar http://ftp.frugalware.org/pub/other/artwork/$pkgname"
source=(http://ftp.frugalware.org/pub/other/artwork/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('29fa5d69b43b3df8ca6c894c8765ae99d06b6486')

build()	{
	Fmkdir usr/share/gnome-shell/extensions/frugalware-logo@frugalware.org/
	Fcd
	Ffilerel extension.js usr/share/gnome-shell/extensions/frugalware-logo@frugalware.org/extension.js
	Ffilerel metadata.json usr/share/gnome-shell/extensions/frugalware-logo@frugalware.org/metadata.json
}
	
