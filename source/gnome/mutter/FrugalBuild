# Compiling time: 0.36 SBU
# Maintainer: Baste <baste@frugalware.org>
# Contributor: bouleetbil <bouleetbil@frogdev.info>

pkgname=mutter
pkgver=3.5.91
pkgrel=1
pkgdesc="A window manager for GNOME (new metacity for gnome3)"
url="http://www.gnome.org/"
depends=('libxml2>=2.7.8' 'startup-notification'  'gnome-themes>=3.0.0' 'libcm' 'gnome-frugalware>=0.7.2' \
	'zenity>=3.0.0' 'clutter>=1.11.6' 'libcanberra-gtk' 'xcb-util>=0.3.8' \
	'gsettings-desktop-schemas>=3.5.3')
makedepends=('intltool' 'gnome-doc-utils' 'gnome-common' 'gobject-introspection')
groups=('gnome' 'gnome-minimal')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
_F_gnome_ext=".tar.xz"
_F_gnome_git="n"
Finclude gnome gnome-scriptlet
Fconfopts="$Fconfopts  --with-clutter --disable-static  --with-gtk=3.0"
sha1sums=('d2e2b4558976c68c23605a78270df756d10ec8b9')
if [ "$_F_gnome_git" != "n" ]; then
	unset sha1sums
fi

build() {
	if [ "$_F_gnome_git" != "n" ]; then
		Funpack_scm
		Fcd $pkgname
		sh ./autogen.sh
	else
		Fcd
	fi

	Fsed "-Werror" "" configure
	Fbuild
	Fbuild_gnome_scriptlet
}
