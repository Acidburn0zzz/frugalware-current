# Old Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gnome-pilot
pkgver=2.0.13
pkgrel=4
pkgdesc="Pilot support for GNOME"
url="http://www.gnome.org/"
depends=('pilot-link' 'gnome-panel' 'scrollkeeper')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/pilot.schemas')
_F_gnome_scrollkeeper="y"
Finclude gnome gnome-scriptlet
sha1sums=('1b0fabbb944b23bafbd1c2ea464e3532f0083111')

build() {
	Fcd
	Fbuild_slice_scrollkeeper
	Fmake --enable-usb --enable-network --with-vfs

	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1

	Fmkdir /usr/share/applications
	Fmv /usr/share/control-center-2.0/capplets/gpilotd-control-applet.desktop \
		/usr/share/applications
	Frm /usr/share/control-center-2.0
	Fbuild_gnome_scriptlet
}

# optimization OK
