pkgname=gtksourceview
pkgver=1.7.2
pkgrel=1
pkgdesc="A text widget adding syntax highlighting and more to GNOME"
url="http://www.gnome.org/"
depends=('libgnomeprintui' 'gtk+2' 'gnome-vfs')
makedepends=('intltool' 'gtk-doc')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
Fconfopts="$Fconfopts --enable-gtk-doc"
sha1sums=('de518f5e03b0afc016b9ab2ff4f831f17c695538')

build() {
	Fbuild
	Frm usr/share/gtksourceview-1.0/language-specs/boo.lang
}

