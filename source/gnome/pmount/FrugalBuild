# Compiling time: 0.01 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=pmount
pkgver=0.8
pkgrel=1
pkgdesc="Mount removable devices as normal user"
url="http://www.piware.de/projects.shtml"
depends=('sysfsutils' 'hal')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.piware.de/projects/?C=M;O=D'|grep pmount-[0-9\.]*.tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.piware.de/projects/$pkgname-$pkgver.tar.gz)
md5sums=('ba64e457944d0331632705af7b0775cd')

build()
{
	Fcd
	Fmakeinstall PREFIX=/usr
	Fln /usr/bin/pmount-hal /etc/hal/device.d/60-pmount.hal
}

