# Compiling time: 0.66 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=evince
pkgver=0.8.1
pkgrel=3
pkgdesc="A document viewer for GNOME"
url="http://www.gnome.org/projects/evince/"
depends=('libgnomeui>=2.18.0' 'poppler-glib>=0.5.4' 'espgs' 'scrollkeeper' 'desktop-file-utils' \
	 't1lib' 'dbus-glib>=0.71-2' 'tetex-kpathsea' 'djvulibre')
makedepends=('intltool' 'gnome-doc-utils' 'perl-xml' 'tetex' 'nautilus>=2.18.0')
replaces=('gpdf')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/evince.schemas'
	'/etc/gconf/schemas/evince-thumbnailer.schemas'
	'/etc/gconf/schemas/evince-thumbnailer-djvu.schemas'
	'/etc/gconf/schemas/evince-thumbnailer-ps.schemas'
	'/etc/gconf/schemas/evince-thumbnailer-dvi.schemas')
_F_gnome_iconcache="y"
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
Finclude gnome gnome-scriptlet
sha1sums=('5f32ff51cfde32fee89062743a3ddabbdadf579f')
Fconfopts="$Fconfopts --enable-nautilus --enable-t1lib --enable-dvi --enable-pixbuf --enable-tiff --enable-djvu --with-print=gtk"

subpkgs=('evince-nautilus')
subdescs=('Evince plugin for Nautilus')
subdepends=("nautilus>=2.18.0 $pkgname=$pkgver")
subgroups=('gnome')
subarchs=('x86_64 i686')

[ "$CARCH" == "x86_64" ] && \
	( CFLAGS="$CFLAGS -fPIC -DPIC" && LIB_CFLAGS="-fPIC -DPIC" )

build() {
	Fcd
	Fbuild_slice_scrollkeeper
	Fbuild
	
	# We want the menu item...
	Fsed "NoDisplay=true" "NoDisplay=false" $Fdestdir/usr/share/applications/evince.desktop
	
	# evince-nautilus package
        Fsplit evince-nautilus usr/lib/nautilus/
	
	Fbuild_gnome_scriptlet
}

# optimization OK
