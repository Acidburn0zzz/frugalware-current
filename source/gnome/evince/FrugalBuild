pkgname=evince
pkgver=3.18.2
pkgrel=3
pkgdesc="A document viewer for GNOME"
depends=('gtk+3>=3.18.6-2' 'libsecret>=0.18.3-3' 'gsettings-desktop-schemas>=3.18.1-2' \
	'djvulibre>=3.5.27-3' 'libspectre>=0.2.7-2' 'libgxps>=0.2.3.2-3' 't1lib>=5.1.2-4' 'poppler-glib>=0.40.0-1')
makedepends=('itstool>=2.0.2-3' 'intltool>=0.51.0-2' 'nautilus>=3.18.4-2' 'gobject-introspection>=1.46.0-2' 'texlive>=20150523-5')
replaces=('gpdf')
groups=('gnome')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_gnome_ext=".tar.xz"
_F_gnome_doc="y"
_F_gnome_devel="n"
Finclude gnome gnome-scriptlet
url="http://www.gnome.org/projects/evince/"
sha1sums=('2e120d9792b448f0fad4a9285cb3346a2cbc1098')
Fconfopts+=" --disable-static --enable-introspection --enable-comics=yes \
        --enable-dvi=yes \
        --enable-djvu=yes \
        --enable-xps=yes \
	--enable-pdf=yes \
        --enable-t1lib=yes"

subpkgs=('evince-nautilus')
subdescs=('Evince plugin for Nautilus')
subdepends=("nautilus>=3.18.4-2")
subrodepends=("$pkgname=$pkgver")
subgroups=('gnome')
subarchs=('x86_64 i686')
subreplaces=('')
subprovides=('')


build() {
	Fbuild

	# evince-nautilus package
        Fsplit evince-nautilus usr/lib/nautilus/

	Fbuild_gnome_scriptlet
}

# optimization OK
