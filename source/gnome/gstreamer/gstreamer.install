post_install() {
	ldconfig -r . > /dev/null 2>&1
	echo -n "Registering components... "
	usr/bin/gst-compprep > /dev/null 2>&1
	usr/bin/gst-register > /dev/null 2>&1
	echo "done."
}

post_upgrade() {
	post_install $1
}

post_remove() {
	echo -n "Removing gstreamer cache dir... "
	rm -rf var/cache/gstreamer-0.10
	echo "done."
}

op=$1
shift

$op $*
