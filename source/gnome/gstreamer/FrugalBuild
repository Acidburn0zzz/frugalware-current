# Last modified: Mon, 05 Sep 2005 18:03:19 +0200
# Compiling time: ~2 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gstreamer
pkgver=0.8.11
pkgrel=1
pkgdesc="GNOME Multimedia Framework"
url="http://gstreamer.freedesktop.org/"
depends=('libgnomeui')
makedepends=('python')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
sha1sums=('945b08e68f31f99621ce7c35d7ec3b7ac3e49b1e' \
	  '401eaa69cd21611f133866b45f5bfc7195a6108b')

build() {
	Fbuild --disable-tests \
		--disable-examples --enable-fast-stack-trash
}

