# Last modified: Wed, 04 May 2005 22:56:53 -0400
# Compiling time: ~2 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gstreamer
pkgver=0.8.10
pkgrel=1
pkgdesc="GNOME Multimedia Framework"
url="http://gstreamer.freedesktop.org/"
depends=('libgnomeui')
makedepends=('python')
groups=('gnome' 'gnome-core')
archs=('i686')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('3de474d993e23c901e9dfdd1fea486e0' \
	'a3fc6599fa20a800d6bab70dbcb7be67')

build() {
	cd $startdir/src/gstreamer-$pkgver
	./configure --prefix=/usr --localstatedir=/var --disable-tests \
		--disable-examples --disable-docs-build

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
