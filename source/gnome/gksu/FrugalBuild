pkgname=gksu
pkgver=1.9.4
pkgrel=2
pkgdesc="A GTK+2 frontend for su and sudo"
url="http://www.gnu.org/non-gnu/gksu/"
backup=(etc/gksu.conf)
depends=('atk' 'libgksu2' 'freetype2' 'pango')
makedepends=('gtk-doc' 'perl-xml' 'nautilus' 'avahi' 'gnome-vfs')
groups=('gnome' 'gnome-apps')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump http://people.debian.org/~kov/gksu/gksu/ | grep tar.gz$ | tail -n 1 | sed 's/.*gksu-\([0-9\.]*\).tar.gz/\1/'"
source=(http://people.debian.org/~kov/$pkgname/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('bf68e65f01e7413d62e2269d8fe0b7df150d0aae')

subpkgs=("nautilus-$pkgname")
subdescs=('Gksu nautilus extension')
subgroups=('gnome gnome-apps')
subdepends=("$pkgname=$pkgver avahi nautilus  gnome-vfs")
subarchs=('i686 x86_64')

build()
{
	Fbuild
	Fsplit nautilus-$pkgname usr/lib
}

# optimization OK
