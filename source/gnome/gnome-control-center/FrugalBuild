USE_CHEESE=${USE_CHEESE:-"y"}

pkgname=gnome-control-center
pkgver=3.19.91
pkgrel=1
pkgdesc="GNOME Control Center"
depends=('gnome-desktop>=3.19.90' 'gnome-menus>=3.13.3-3' 'gnome-online-accounts>=3.19.90' 'libgtop>=2.33.4' 'gnome-settings-daemon>=3.19.90' 'libgudev>=230-5' \
	'mesademos>=8.3.0-2' 'libpwquality>=1.3.0-3' 'gst1-plugins-bad>=1.6.2-2' 'ibus>=1.5.11-2' 'cups-pk-helper' 'colord-gtk>=0.1.26-2' 'accountsservice' \
	'nm-connection-editor>=1.1.90' 'libsmbclient>=4.3.3-1' 'talloc>=2.1.5-2' 'grilo>=0.3.0' 'gnome-bluetooth>=3.18.1-3' 'libpulse>=7.1-4')
makedepends=('intltool>=0.51.0-2' 'cups>=2.1.2-2' 'krb5>=1.14-1' 'icu4c>=55.1-3.' 'docbook-xsl>=1.79.1-1' 'gobject-introspection>=1.46.0-2')
rodepends=('gst1-plugins-base-alsa>=1.6.2-2' 'sound-theme-freedesktop>=0.8-3' 'system-config-printer')
groups=('gnome' 'gnome-minimal')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
_F_gnome_desktop="y"
_F_gnome_mime="y"
_F_gnome_iconcache="y"
_F_gnome_doc="y"
_F_gnome_devel="y"
_F_gnome_ext=".tar.xz"
options+=('scriptlet')
Finclude gnome gnome-scriptlet
Fconfopts+=" --enable-debug --disable-update-mimedb --disable-static"

if Fuse $USE_CHEESE; then
	export CFLAGS="$CFLAGS -I/usr/include/cheese -I/usr/include/gstreamer-1.0 -I/usr/include/libxml2"
       	depends=("${depends[@]}" "cheese-devel>=3.18.1-3")
fi

sha1sums=('bcbc1644220568339b2b4f248d0f15386ad5405b')

build() {
	Fcd
	Fsed '$(datadir)/pkgconfig' '$(libdir)/pkgconfig' panels/keyboard/Makefile.am
	Fbuild
	Fbuild_gnome_scriptlet
	_F_gnome_split_doc
}

