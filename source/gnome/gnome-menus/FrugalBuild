pkgname=gnome-menus
pkgver=2.14.0
pkgrel=2
pkgdesc="GNOME menus"
url="http://www.gnome.org/"
depends=('gnome-vfs' 'gamin')
makedepends=('intltool' 'python')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
source=(${source[@]} gmenu_tree_directory_get_desktop_file_path.patch)
