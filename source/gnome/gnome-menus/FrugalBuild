# Last modified: Sat, 25 Jun 2005 17:26:52 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gnome-menus
pkgver=2.10.1
pkgrel=2
pkgdesc="GNOME menus"
url="http://www.gnome.org/"
depends=('gnome-vfs')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
md5sums=('83d9695a35ed2215620e8773ee918b8a')

build() {
	Fmake --sysconfdir=/etc/gnome || return 1
	Fmakeinstall || return 1
}

