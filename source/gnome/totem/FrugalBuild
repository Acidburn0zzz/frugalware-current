pkgname=totem
pkgver=3.19.91
pkgrel=1
pkgdesc="Movie player for GNOME based on Xine"
depends=('gst1-plugins-base>=1.6.3-1' 'gst1-plugins-base-oil>=1.6.3-1' 'clutter-gst3>=3.0.14-4' 'clutter-gtk>=1.6.6-3' 'gsettings-desktop-schemas>=3.18.1-3' \
	'gst1-plugins-good>=1.6.3-1' 'gst1-plugins-bad-soundtouch>=1.6.3-1' 'pygobject3>=3.18.2-2' \
	'totem-pl-parser>=3.10.6-2' 'libpeas-gtk>=1.16.0-2' 'gst-libav>=1.6.3-1' 'appdata-tools')
makedepends=('itstool' 'intltool' 'gnome-doc-utils' 'grilo' 'vala')
groups=('gnome')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_doc="y"
_F_gnome_ext=".tar.xz"
_F_gnome_devel="y"
Finclude gnome gnome-scriptlet
url="http://www.gnome.org/projects/totem/"

subpkgs=("${subpkgs[@]}" "$pkgname-plugins")
subdescs=("${subdescs[@]}" 'Plugins for Totem')
subdepends=("${subdepends[@]}" "grilo") # zeitgeist")
subrodepends=("${subrodepends[@]}" "$pkgname")
subgroups=("${subgroups[@]}" 'gnome-extra')
subarchs=("${subarchs[@]}" 'i686 x86_64')
subreplaces=("${subreplaces[@]}" '')
subprovides=("${subprovides[@]}" '')
subconflicts=("${subconflicts[@]}" '')

subpkgs=("${subpkgs[@]}" "$pkgname-nautilus")
subdescs=("${subdescs[@]}" 'Totem plugin for Nautilus')
subdepends=("${subdepends[@]}" "nautilus>=3.18.4-2")
subrodepends=("${subrodepends[@]}" "$pkgname")
subgroups=("${subgroups[@]}" 'gnome')
subarchs=("${subarchs[@]}" 'i686 x86_64')
subreplaces=("${subreplaces[@]}" '')
subprovides=("${subprovides[@]}" '')
subconflicts=("${subconflicts[@]}" '')

sha1sums=('d62b307fe7ce51919c78d99f1d6579e3350aba72')

build() {

	Fcd
	export BROWSER_PLUGIN_DIR=/usr/lib/mozilla/plugins

	Fmake \
		--enable-nautilus=yes \
		--disable-debug \
		--enable-python=yes \
		PYLINT=$(type -P true) APPSTREAM_XML=$(type -P true)
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1

	# plugins package
	Fsplit totem-plugins /usr/lib/totem/plugins

	# totem-nautilus package
	Fsplit totem-nautilus /usr/lib/nautilus/

	Fbuild_gnome_scriptlet
	_F_gnome_split_doc
}

# optimization OK

