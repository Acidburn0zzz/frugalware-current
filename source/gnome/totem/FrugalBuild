# Contributor: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=totem
pkgver=1.0.3
pkgrel=2
url="http://www.hadess.net/totem.php3"
pkgdesc="Movie player for GNOME based on Xine"
depends=('xine-lib' 'nautilus-cd-burner' 'scrollkeeper' 'desktop-file-utils')
makedepends=('intltool' 'nautilus')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('d6d7e532bc887ec72e99d423a2b9df86' '6cabbb220a3baf6d1b4d24ddeb7f0701')
build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fmake --sysconfdir=/etc --disable-schemas-install --enable-nautilus --enable-mozilla || return 1
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1 || return 1

	# Remove empty directory.
	Frm /usr/lib/mozilla
}

# vim: ft=sh
