pkgname=totem
pkgver=1.2.1
pkgrel=2
url="http://www.hadess.net/totem.php3"
pkgdesc="Movie player for GNOME based on Xine"
depends=('libxi' 'libxtst' 'fontconfig' 'libstdc++' 'libxxf86vm' 'dbus' \
	 'xine-lib' 'libxrandr' 'atk' 'nautilus' 'libsm' 'libxinerama' \
	 'libmusicbrainz' 'nss' 'cairo' 'libxcursor' 'gnome-desktop' \
	 'iso-codes')
makedepends=('intltool' 'firefox=1.5' 'pango' 'gnome-icon-theme')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
sha1sums=('644096e976cd48a45d6f845c97e540cbc17d2f46' \
	  'ab61290caa3622363119c8107aa74a79c9618ae9')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fmake --disable-schemas-install --enable-nautilus \
	      --enable-mozilla --with-mozilla=firefox
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimalization OK
