# Last modified: Thu, 08 Sep 2005 04:42:17 +0200
# Compiling time: 0.17 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gnome-netstatus
pkgver=2.12.0
pkgrel=2
pkgdesc="A GNOME applet which provides information about a network interface"
url="http://www.gnome.org/"
depends=('gnome-panel' 'scrollkeeper')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('10080783853cc285fd920b4d1adc4e290411a73b')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fmake --disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimalization OK
