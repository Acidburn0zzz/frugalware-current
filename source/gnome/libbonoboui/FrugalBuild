# Last modified: Tue, 08 Mar 2005 15:31:12 +0100
# Compiling time: ~4 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libbonoboui
pkgver=2.8.1
pkgrel=2
pkgdesc="User Interface part of libbonobo"
url="http://www.gnome.org/"
depends=('libgnomecanvas' 'libgnome')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	00-$pkgname-$pkgver-hu.patch)
md5sums=('b23daafa8344a88696d497f20285ef55' \
	'd4a4498d3a02cf1f3e738745ba091a23')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/00-$pkgname-$pkgver-hu.patch || return 1
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
