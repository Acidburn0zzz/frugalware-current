pkgname=gnome-frugalware
pkgver=0.5.1
pkgrel=1
pkgdesc="Gnome default settings for Frugalware Linux."
url="http://frugalware.org"
rodepends=('gnome-themes' 'gtk+2-engines' 'dejavu-ttf')
depends=()
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
up2date="$pkgver"
source=(http://ftp.frugalware.org/pub/other/artwork/gnome-theme/$pkgname-$pkgver.tar.bz2)
sha1sums=('17d675fa493792f653ba9b3af1ab02a222d0653b')

build()
{
	cd $Fsrcdir
	cp -Rad usr $Fdestdir
	chown -R root:root $Fdestdir/usr
}

