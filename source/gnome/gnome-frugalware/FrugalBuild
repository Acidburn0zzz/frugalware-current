pkgname=gnome-frugalware
pkgver=0.5
pkgrel=1
pkgdesc="Gnome default settings for Frugalware Linux."
url="http://frugalware.org"
rodepends=('tango-icon-theme' 'gtk+2-engines' 'metacity-themes-simplebox-custom')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
up2date="$pkgver"
source=(http://ftp.frugalware.org/pub/other/people/alex/$pkgname-$pkgver.tar.bz2)
sha1sums=('727e76fff3fac6e73da4929ae13535ca981cf491')

build()
{
	cd $Fsrcdir
	cp -Rad usr $Fdestdir
	chown -R root:root $Fdestdir/usr
}

