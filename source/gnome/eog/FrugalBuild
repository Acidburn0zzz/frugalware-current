pkgname=eog
pkgver=2.14.2
pkgrel=1
pkgdesc="An image viewing and cataloging program for GNOME"
url="http://www.gnome.org/"
depends=('libexif' 'libgnomeui' 'scrollkeeper' 'desktop-file-utils' \
	 'libgnomeprintui' 'gnome-desktop')
makedepends=('intltool' 'gdk-pixbuf' 'libart_lgpl')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('620e6e613ce106ae286706b6bf057014636c484f')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	[ -f omf.make ] && Fsed '/-scrollkeeper-update.*' '' omf.make
	Fmake --disable-schemas-install --disable-scrollkeeper
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimization OK
