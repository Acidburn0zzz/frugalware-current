USE_SPICE=${USE_SPICE:-"n"}
# add protocol support Spice

pkgname=vinagre
pkgver=3.20.1
pkgrel=1
pkgdesc="VNC Client for the GNOME Desktop"
depends=('vte3>=0.44.0' 'libsecret>=0.18.5' 'gtk3-vnc' 'freerdp>=1.2.0-3')
makedepends=('vala' 'intltool' 'itstool' 'gobject-introspection')
options=('scriptlet')
_F_gnome_glib="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_doc="y"
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
groups=('gnome')
archs=('i686' 'x86_64')
sha1sums=('aba927fe710a2e24c5e02ffc9b9efe0a0af4d60e')
unset MAKEFLAGS
Fconfopts+=" --enable-ssh --enable-rdp"
replaces=('tsclient')
if Fuse $USE_SPICE; then
        depends=("${depends[@]}" "spice-gtk")
        Fconfopts+=" --enable-spice"
fi

# optimization OK
