options+=('asneeded')

USE_SPICE=${USE_SPICE:-"n"}
# add protocol support Spice

pkgname=vinagre
pkgver=3.8.1
pkgrel=1
pkgdesc="VNC Client for the GNOME Desktop"
depends=('vte3' 'libsecret' 'gtk3-vnc')
makedepends=('vala' 'intltool' 'itstool' 'gobject-introspection')
options=('scriptlet')
_F_gnome_glib="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_doc="y"
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
groups=('gnome')
archs=('i686' 'x86_64')
sha1sums=('a9c860033ee3cf774255b3341b90c00fc74c37e9')
unset MAKEFLAGS
Fconfopts+=" --enable-rdp --enable-ssh"
replaces=('tsclient')
if Fuse $USE_SPICE; then
        depends=("${depends[@]}" "spice-gtk")
        Fconfopts+=" --enable-spice"
fi

# optimization OK
