# Last modified: Thu, 08 Sep 2005 03:16:49 +0200
# Compiling time: 0.21 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gnome-terminal
pkgver=2.12.0
pkgrel=2
pkgdesc="GNOME terminal emulator"
url="http://www.gnome.org/"
depends=('libgnomeui' 'startup-notification' 'vte' 'scrollkeeper')
makedepends=('intltool') 
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	00-$pkgname-$pkgver-prompt.patch \
	$pkgname.install)
sha1sums=('5a81e76968962d9e8acd077db8b4d14284f996e2' \
	  '825da7671bf95eaa970d44de52cd3586205717ca' \
	  '60ffbe610aab672ca5fa777c0af29d3fd864e749')

build() {
	Fcd
	Fpatchall
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fmake --sysconfdir=/etc --disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# vim: ft=sh

# optimalization OK
