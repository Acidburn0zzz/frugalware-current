#!/bin/bash

if [ -z "$XDG_CONFIG_DIRS" ]; then
	XDG_CONFIG_DIRS=/etc/gnome/xdg
else
	XDG_CONFIG_DIRS="$XDG_CONFIG_DIRS":/etc/gnome/xdg
fi
export XDG_CONFIG_DIRS

if [ -x "/usr/bin/compiz-gnome" ]; then
	/usr/bin/compiz-gnome
fi

alias cp='cp'
if [ -d "/etc/skel/.gnome2" ]; then
	if [ ! -e "${HOME}/.gnome2" ]; then
		#cp -Rf /etc/skel/.gnome2 ${HOME}/
		echo "Copying gnome2"
	fi
fi
if [ -d "/etc/skel/.gconf" ]; then
	if [ ! -e "${HOME}/.gconf" ]; then
		cp -Rf /etc/skel/.gconf ${HOME}/
		echo "Copying gconf"
	fi
fi
alias cp='cp -i'

gnome-session.bin
