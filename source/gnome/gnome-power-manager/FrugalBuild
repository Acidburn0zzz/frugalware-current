pkgname=gnome-power-manager
pkgver=2.91.93
pkgrel=1
pkgdesc="GNOME Power Management tool"
url="http://www.gnome.org/"
depends=('libxml2>=2.7.8' 'libnotify>=0.7.0' 'hal>=0.5.11' 'dbus-glib>=0.80' 'xextproto' 'libgnome>=2.30.0' \
	'libglade' 'libwnck>=2.90.0' 'gnome-keyring>=2.32.0' 'gstreamer' 'gnome-control-center>=2.90.0' \
	'upower' 'udisks' 'gnome-policykit' 'libcanberra-gtk' 'unique' 'pm-utils')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome')
archs=('i686' 'x86_64' 'ppc')
_F_gnome_glib="y"
_F_gnome_scrollkeeper=y
_F_gnome_desktop=y
_F_gnome_iconcache=y
Finclude gnome gnome-scriptlet
Fconfopts="$Fconfopts --enable-keyring --enable-policykit"
sha1sums=('3d0176b4e1a85be2012eb2d379da484ef82ccd0f')

build() {
	Fcd
	Fautoreconf
	intltoolize -c -f || Fdie
	Fbuild
	Fbuild_gnome_scriptlet
}

