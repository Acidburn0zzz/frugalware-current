pkgname=libgtkhtml
pkgver=2.6.3
pkgrel=3
pkgdesc="A GTK+2 based HTML rendering library"
url="http://www.gnome.org/"
depends=('gail' 'gnome-vfs' 'libxml2')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('b5022ac2faf87e79ea5a687880f5ff7081b46bf5')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

