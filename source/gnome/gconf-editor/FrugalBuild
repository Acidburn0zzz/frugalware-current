# Old Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gconf-editor
pkgver=2.14.0
pkgrel=2
pkgdesc="An editor for the GConf configuration system"
url="http://www.gnome.org/"
depends=('libgnomeui' 'scrollkeeper')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
source=(${source[@]} 01_free_crasher_fix.patch)
sha1sums=('3cda659ebbfbe8c10ca75406aed0f778374983b5' \
	  'cabf24295957d9ec4f9e88b16d9dc0293f824491')

build() {
	Fcd
	# This maybe fixed in next release (maybe in .14.1)
	Fpatchall
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fmake --disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimization OK
