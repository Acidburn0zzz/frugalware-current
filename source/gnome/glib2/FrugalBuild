pkgname=glib2
realname=glib
pkgver=2.4.7
pkgrel=1
pkgdesc="Common C routines used by Gtk+ 2.2 and other libs"
pkgurl="http://ftp.gnome.org/pub/gnome/sources/glib"
depends=('glibc' 'pkgconfig')
# don't use nongnome's up2date since it includes the development tree, too
# . ../up2date.nongnome
preup2date=`lynx -dump "$pkgurl/?C=M;O=D"|grep '[02468]/$'|sed -ne 's|.*/\(.*\)/|\1|;1 p'`
up2date=`lynx -dump $pkgurl/$preup2date/|grep LATEST-IS-[0-9\.]*$|sed 's/.*-\(.*\)/\1/'`
source=(http://ftp.gnome.org/pub/gnome/sources/glib/$preup2date/glib-$pkgver.tar.bz2)
md5sums=('eff6fec89455addf8b0dee5a19e343be')

build() {
	cd $startdir/src/glib-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
