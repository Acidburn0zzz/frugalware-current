pkgname=gtkam
pkgver=0.1.12
pkgrel=1
pkgdesc="GTKam is a GTK-frontend to gphoto2."
url="http://www.gphoto.org"
depends=('libgnomeui' 'libgphoto2' 'gimp' 'libexif-gtk')
groups=('gnome')
archs=('i686' 'x86_64')
up2date="lynx -dump \"http://sourceforge.net/project/showfiles.php?group_id=8874\" | grep $pkgname-.*.tar.gz | head -n 1 | sed \"s/.*gtkam-\(.*\).tar.gz.*/\1/\""
source=(http://dl.sourceforge.net/gphoto/$pkgname-$pkgver.tar.gz gtkam.install)
md5sums=('622170d414718a5ae11487a6af1e47cd' '19fdd18498d3d4b2b12c5bd11b8cab6f')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	[ -f omf.make ] && Fsed '/-scrollkeeper-update.*' '' omf.make
	Fbuild || return 1
}

