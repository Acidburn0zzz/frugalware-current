# Last modified: Fri, 01 Apr 2005 12:13:22 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gtk+2-engines-clearlooks
pkgver=0.5
pkgrel=2
pkgdesc="Clearlooks GTK+2 engine"
url="http://live.gnome.org/ClearLooks"
depends=('gtk+2')
groups=('gnome' 'gnome-core')
archs=('i686')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/clearlooks/?sort_by=date&sort=desc'|grep tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/clearlooks/clearlooks-$pkgver.tar.bz2)
md5sums=('16ad9981ebbd816d7adfe05aadb0503b')

build() {
	cd $startdir/src/clearlooks-$pkgver
	./configure --prefix=/usr --enable-animation

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
