# Last modified: Tue, 21 Jun 2005 09:53:56 +0200
# Compiling time: 0.06 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gtk+2-engines-clearlooks
pkgver=0.6.1
pkgrel=1
pkgdesc="Clearlooks GTK+2 engine"
url="http://clearlooks.sourceforge.net/"
depends=('gtk+2')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/clearlooks/?sort_by=date&sort=desc'|grep tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/clearlooks/clearlooks-$pkgver.tar.bz2)
md5sums=('b81c416ed81a418cad588c291b7c49a3')

build() {
	Fcd clearlooks-$pkgver

	Fbuild --enable-animation

	# metacity-themes-clearlooks contains these files.
	Frm /usr/share/themes/Clearlooks/metacity-1
}

# vim: ft=sh
