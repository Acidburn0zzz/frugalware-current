# Last modified: Thu, 16 Mar 2006 23:53:08 +0100
# Compiling time: ~3.69 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gst-plugins-good
pkgver=0.10.2
pkgrel=2
pkgdesc="Plugins for GStreamer (Good)"
url="http://gstreamer.freedesktop.org/"
depends=('esd' 'libcdio' 'libdv' 'libjpeg' 'gst-plugins-base' 'libavc1394' 'gstreamer>=0.10.4' \
	'aalib' 'flac' 'gconf' 'cairo' 'speex')
makedepends=('gtk-doc' 'pyxml')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
options=('scriptlet')
sha1sums=('2a4116d8bfb815b3fff117df3414b977e821dcec')

build() {
	[ "$CARCH" == "x86_64" ] && export CFLAGS="$CFLAGS -fPIC"
	Fmake --disable-schemas-install --disable-arts --disable-artsc \
		--enable-gtk-doc --disable-debug
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimalization OK
