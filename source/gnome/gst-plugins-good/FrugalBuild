# Contributor: crazy <crazy@frugalware.org>

pkgname=gst-plugins-good
pkgver=0.10.2
pkgrel=3
pkgdesc="Plugins for GStreamer (Good)"
url="http://gstreamer.freedesktop.org/"
depends=('libcdio' 'libdv' 'libjpeg' 'gst-plugins-base' 'libavc1394' 'aalib' 'flac' 'speex' 'libshout')
makedepends=('gtk-doc' 'pyxml' 'gconf' 'esd' 'ladspa_sdk')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('2a4116d8bfb815b3fff117df3414b977e821dcec')

subpkgs=("$pkgname-gconf" "$pkgname-esd" "$pkgname-docs")
subdescs=('GStreamer gconf plugin (Good).' 'GStreamer esd plugin (Good).' 'GStreamer Plugins Documentation.')
subdepends=("gconf gstreamer" "esd gst-plugins-base" "$pkgname=$pkgver")
subinstall=("$pkgname-gconf.install" '' '')
subgroups=('gnome gnome-core' 'gnome gnome-core' 'gnome gnome-docs')
subarchs=('i686 x86_64' 'i686 x86_64' 'i686 x86_64')

build() {
	[ "$CARCH" == "x86_64" ] && export CFLAGS="$CFLAGS -fPIC"
	Fmake --disable-schemas-install --disable-arts --disable-artsc \
		--enable-gtk-doc --disable-debug --with-gnu-ld --with-x
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fsplit $pkgname-gconf usr/lib/gstreamer-0.10/libgstgconfelements.*
	Fsplit $pkgname-gconf etc/
	Fsplit $pkgname-esd usr/lib/gstreamer-0.10/libgstesd.*
	Fsplit $pkgname-docs usr/share/gtk-doc
}


# optimization OK
