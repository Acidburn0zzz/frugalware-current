pkgname=nm-applet
_F_gnome_name=network-manager-applet
pkgver=0.9.2.0
pkgrel=2
pkgdesc="Network Management applet"
depends=('gconf' 'gtk+3' 'gnome-keyring>=3.3.0' \
	'networkmanager>=0.9.1.95' 'polkit-gnome' \
	'mobile-broadband-provider-info' \
	'libnotify>0.7' 'gnome-bluetooth' 'iso-codes')
makedepends=('perl-xml-parser' 'intltool')
groups=('gnome' 'gnome-minimal')
archs=('i686' 'x86_64')
Finclude gnome
source=($source deprecated.diff)
sha1sums=('44f6b4212f096690c88a2aecbb3bdd3362c57689' \
          'bebd9eb1bda72be9e542b7c1f593464c07325c00')
_F_cd_path=$_F_gnome_name-$pkgver
Fconfopts="$Fconfopts --with-gtkver=3 --disable-static \
	--with-bluetooth"
replaces=('gnome-ppp')

build()
{
	Fcd
	Fpatchall
        Fautoreconf
	Fsed "-Werror" "" configure
	Fmake
	Fmakeinstall
}

# optimization OK
