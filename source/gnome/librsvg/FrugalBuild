# Last modified: Fri, 11 Mar 2005 15:30:27 +0100
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>
# Contributor: VMiklos <mamajom@axelero.hu>

pkgname=librsvg
pkgver=2.9.5
pkgrel=1
pkgdesc="A high performance SVG rendering library for GNOME"
url="http://www.gnome.org/"
depends=('libart_lgpl' 'libgsf' 'libcroco' 'libgnomeprintui')
groups=('gnome' 'gnome-core')
archs=('i686')
nondevel=1
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('44799d75e940eb4150acdae4f63cbe2a' \
	'4ee519e1198fbb1ba53d370348bce801')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-gtk-doc

	make || return 1

	make DESTDIR=$startdir/pkg install

	# Remove empty directory.
	rm -rf $startdir/pkg/usr/lib/mozilla
}

# vim: ft=sh
