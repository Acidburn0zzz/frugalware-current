pkgname=librsvg
pkgver=2.12.7
pkgrel=3
pkgdesc="A high performance SVG rendering library for GNOME"
url="http://www.gnome.org/"
depends=('gtk+2' 'libxml2' 'popt' 'libart_lgpl')
makedepends=('firefox' 'gtk-doc')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
nondevel=1
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
sha1sums=('2dbb387bca326d44c24348bd48b39b12bd3ab365')

build()
{
	Fsed 'mozilla-config' 'firefox-config' configure
	Fsed '^\(MOZILLA_CFLAGS = .*\)' '\1 `pkg-config --cflags glib-2.0`' \
		moz-plugin/Makefile.in
	Fbuild --enable-gtk-doc
}

# vim: ft=sh

# optimalization OK
