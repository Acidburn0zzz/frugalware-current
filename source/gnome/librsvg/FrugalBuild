pkgname=librsvg
pkgver=2.14.2
pkgrel=1
pkgdesc="A high performance SVG rendering library for GNOME"
url="http://www.gnome.org/"
depends=('gtk+2' 'libxml2' 'popt' 'libart_lgpl' 'libcroco')
makedepends=('firefox' 'gtk-doc')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
nondevel=0
Finclude gnome
sha1sums=('31a3d174a31038e6167020fde6ee271862eff2d0')

build()
{
	Fsed 'mozilla-config' 'firefox-config' configure
	Fsed '^\(MOZILLA_CFLAGS = .*\)' '\1 `pkg-config --cflags glib-2.0`' \
		moz-plugin/Makefile.in
	Fbuild --enable-gtk-doc --enable-pixbuf-loader --enable-gtk-theme \
		--with-croco
}


# optimalization OK
