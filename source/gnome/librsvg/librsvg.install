# arg 1:  the new package version
post_install() {
	# updating pixbuf-loaders
	gtk-query-immodules-2.0 > etc/gtk-2.0/gtk.immodules
	gdk-pixbuf-query-loaders > etc/gtk-2.0/gdk-pixbuf.loaders
}

post_upgrade() {
	post_install $1
}

pre_remove() {
	/bin/true
}

post_remove() {
	/bin/true
}

op=$1
shift

$op $*

