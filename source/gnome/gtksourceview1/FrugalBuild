# Compiling time: 0.19 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gtksourceview1
_F_gnome_name=gtksourceview
pkgver=1.8.5
pkgrel=1
pkgdesc="A text widget adding syntax highlighting and more to GNOME"
url="http://www.gnome.org/"
depends=('libgnomeprintui>=2.18.1' 'gtk+2>=2.12.0' 'gnome-vfs>=2.20.0')
makedepends=('intltool' 'gtk-doc')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome

build() {
	Fcd $_F_gnome_name-$pkgver
	Fbuild --enable-gtk-doc
	Frm usr/share/gtksourceview-1.0/language-specs/boo.lang
}

sha1sums=('4e61b6cda043c44dc918edecd2bd9ccfc5438d2c')
# optimization OK
