# Last modified: Fri, 05 May 2006 20:59:04 +0200
# Compiling time: 2.09 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gst-plugins-base
pkgver=0.10.5
pkgrel=2
pkgdesc="Plugins for GStreamer"
url="http://gstreamer.freedesktop.org/"
depends=('libxv' 'libsm' 'libtheora' 'fontconfig' 'alsa-lib' 'cdparanoia' 'pango' 'liboil' 'libvorbis' 'gstreamer>=0.10.4' \
	'libmms' 'hermes' 'ortp')
makedepends=('gtk-doc' 'pyxml' 'gnome-vfs')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('a0e721cc1ea52212c4906894e8f86168c794d38e')

subpkgs=("$pkgname-gnomevfs" "$pkgname-docs")
subdescs=('GStreamer gnome-vfs plugin.' 'GStreamer Plugins Documentation.')
subdepends=("gnome-vfs $pkgname=$pkgver" "$pkgname=$pkgver")
subgroups=('gnome gnome-core' 'gnome gnome-docs')
subarchs=('i686 x86_64' 'i686 x86_64')

build() {
	[ "$CARCH" == "x86_64" ] && export CFLAGS="$CFLAGS -fPIC"
	Fmake --disable-schemas-install --enable-gtk-doc --disable-debug \
		--disable-arts --disable-artsc --with-gnu-ld --with-x
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fsplit $pkgname-gnomevfs usr/lib/gstreamer-0.10/libgstgnomevfs.*
	Fsplit $pkgname-docs usr/share/gtk-doc
}


# optimization OK
