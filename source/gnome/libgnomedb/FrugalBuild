# Compiling time: ~2.27 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=libgnomedb
pkgver=1.99.0
pkgrel=1
pkgdesc="Database widget library for GNOME"
url="http://www.gnome-db.org/"
depends=('libgnomeui' 'libgnomeprint' 'libgda>=1.9.103' 'gtksourceview' 'perl-mysql' 'dbus-glib>=0.71-2')
makedepends=('intltool' 'gtk-doc' 'perl-mysql')
groups=('gnome' 'gnome-libs')
archs=('i686' 'x86_64')
options=('scriptlet')
nondevel=1
_F_gnome_schemas=('/etc/gconf/schemas/libgnomedb.schemas')
_F_gnome_scrollkeeper="y"
Finclude gnome gnome-scriptlet
source=(${source[@]} fix-reconf-warnings.patch use-am_cppflags.patch)
sha1sums=('8b85b173132de6c65328d5197b86eb9039add644' \
	  'e4a33c1f22ba2be131b6088844609d31b0ff797e' \
	  '047295e6148a3275130fb784b5f23c52047b97ab')

build() {
	Fcd
	Fpatchall
	Fautoreconf
	Fbuild_slice_scrollkeeper
	Fmake
	Fmakeinstall
	Fbuild_gnome_scriptlet
}

# optimization OK
