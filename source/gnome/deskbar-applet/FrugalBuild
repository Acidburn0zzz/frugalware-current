pkgname=deskbar-applet
pkgver=2.17.2
pkgrel=1
pkgdesc="The Deskbar applet for gnome"
url="http://www.gnome.org/"
depends=('gnome-python-extras' 'evolution-data-server>=1.9.2' 'elementtree' 'tracker')
makedepends=('intltool' 'perl-xml')
groups=('gnome')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/deskbar-applet.schemas')
_F_gnome_scrollkeeper="y"
Finclude gnome gnome-scriptlet
source=(${source[@]} tracker-search.py)
sha1sums=('d62529a6bf6caec46bd130072e7798e4320fde2a' \
	  'a0141c76d41f21c3ef67898ca3c405b7dc65161d')

build() {
	Fbuild_slice_scrollkeeper
	Fbuild
	
	Finstall 0644 tracker-search.py /usr/lib/deskbar-applet/handlers/
	
	Fbuild_gnome_scriptlet
}

# optimization OK
