# Compiling time: 0.65 SBU
# Maintainer: Baste <baste@frugalware.org>
# Contributor: bouleetbil <bouleetbil@frogdev.info>

options+=('asneeded')

pkgname=libpeas
pkgver=1.15.0
pkgrel=1
pkgdesc="libpeas is a gobject-based plugins engine"
depends=('glib2>=2.45.8' 'pygobject3' 'gobject-introspection>=1.44.0' 'icu4c>=4.8' \
	'python3-pygobject3')
makedepends=('intltool' 'gtk-doc' 'vala')
groups=('gnome')
archs=('i686' 'x86_64')

subpkgs=('libpeas-gtk')
subdescs=('libpeas GTK support')
subdepends=('gtk+3>=3.17.8')
subrodepends=('libpeas')
subgroups=('gnome')
subarchs=('i686 x86_64')
subreplaces=('')
subprovides=('')

subpkgs=("${subpkgs[@]}" "$pkgname-demo")
subdescs=("${subdescs[@]}" "$pkgname demo")
subrodepends=("${subrodepends[@]}" "$pkgname=$pkgver")
subdepends=("${subdepends[@]}" "")
subgroups=("${subgroups[@]}" 'gnome-extra')
subarchs=("${subarchs[@]}" 'i686 x86_64')
subreplaces=("${subreplaces[@]}" '')
subprovides=("${subprovides[@]}" '')

_F_gnome_iconcache="y"
_F_gnome_doc="y"
_F_gnome_ext=".tar.xz"
_F_gnome_devel="y"
Finclude gnome gnome-scriptlet
sha1sums=('c9d806e64fe8b5dca2e2852813b5da043c501f3f')

build() {
	Fbuild
	Fsplit libpeas-gtk usr/lib/*gtk*
	Fsplit libpeas-gtk usr/lib/pkgconfig/*gtk*
	Fsplit libpeas-demo usr/lib/peas-demo
	Fbuild_gnome_scriptlet
	_F_gnome_split_doc
}

# optimization OK
