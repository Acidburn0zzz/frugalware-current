# Last modified: Sat, 03 Sep 2005 13:36:33 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gnome-volume-manager
pkgver=1.4.0
pkgrel=1
pkgdesc="A volume manager for GNOME"
url="http://www.gnome.org/"
depends=('gnome-media' 'gthumb' 'totem')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
#nondevel=1
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	01-defaults.patch \
	gnome-volume-manager-1.4.0-pmount.patch \
	$pkgname-gthumb)
sha1sums=('4e42f30d2745a8c10bd028284119f39e1a8b8fe8' \
	  '0624b78a7354e8673d480df497233945f0cb86e5' \
	  'd1bd597b60f18d671818a03bd3469f4e19521f1c' \
	  '2f814a6a4b287532899e48a5a4df0490ec9fddeb')

build()
{
	Fpatchall
	Fautoconfize
	Fmake --disable-schemas-install \
		--with-mount-program="/usr/bin/pmount-hal %h -e" \
		--with-umount-program="/usr/bin/pumount %d" \
		--with-nautilus="/usr/bin/nautilus"

	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Fexe /usr/bin/$pkgname-gthumb
}

# optimalization OK

