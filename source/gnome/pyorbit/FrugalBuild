# Last modified: Tue, 07 Jun 2005 18:32:13 +0000
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=pyorbit
pkgver=2.0.1
pkgrel=2
pkgdesc="Python bindings for ORBit2"
url="http://www.daa.com.au/~james/pygtk/"
depends=('python' 'orbit2')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
md5sums=('c39384f6257a386231d79db9e403d905')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
