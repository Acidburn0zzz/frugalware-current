pkgname=gtk+2
realname=gtk+
pkgver=2.8.2
pkgrel=1
pkgdesc="The GTK+ Toolkit (2.x series)"
url="http://www.gtk.org/"
depends=('libtiff' 'atk' 'pango' 'libjpeg' 'libpng')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/gtk+/$preup2date/gtk+-$pkgver.tar.bz2 $pkgname.install)
sha1sums=('f0a77bf073a8b5c50910f279e7a64450aadf9b70' \
	  '5363c6a33e5f4942746c97d7aa473cd8f0e992f9')

. /etc/profile.d/pkgconfig.sh

build()
{
	Fcd gtk+-$pkgver
	Fbuild --with-xinput=yes --enable-gtk-doc
}

# vim: ft=sh

# optimalization OK
