pkgname=gtk+2
realname=gtk+
pkgver=2.6.8
pkgrel=1
pkgdesc="The GTK+ Toolkit (2.x series)"
url="http://www.gtk.org/"
depends=('libtiff' 'atk' 'pango' 'libjpeg' 'libpng')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/gtk+/$preup2date/gtk+-$pkgver.tar.bz2 $pkgname.install)
md5sums=('535fa4b62d219445b99953f679b5cf8e' \
	 '13bfc882b23725b1946fa1aa9c65eac6')

build()
{
	Fcd gtk+-$pkgver
	Fbuild --sysconfdir=/etc --with-xinput=yes --enable-gtk-doc || return 1
}

