# Last modified: Tue, 07 Jun 2005 17:05:46 +0000
# Compiling time: ~12 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>
# Contributor: VMiklos <mamajom@axelero.hu>

pkgname=gtk+2
realname=gtk+
pkgver=2.6.7
pkgrel=2
pkgdesc="The GTK+ Toolkit (2.x series)"
url="http://www.gtk.org/"
depends=('libtiff' 'atk' 'pango' 'libjpeg' 'libpng')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/gtk+/$preup2date/gtk+-$pkgver.tar.bz2 $pkgname.install)
md5sums=('b89bf892a0dee943f98b4caa12f773c8' \
	 '13bfc882b23725b1946fa1aa9c65eac6')

build()
{
	Fcd gtk+-$pkgver
	Fbuild --sysconfdir=/etc --with-xinput=yes --enable-gtk-doc || return 1
}

