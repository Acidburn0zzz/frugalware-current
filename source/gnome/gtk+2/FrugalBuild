pkgname=gtk+2
realname=gtk+
pkgver=2.10.6
pkgrel=1
pkgdesc="The GTK+ Toolkit (2.x series)"
url="http://www.gtk.org/"
depends=('libtiff' 'atk>=1.12.3' 'libxi' 'libxinerama' 'fontconfig' 'libjpeg' \
	 'pango>=1.14.5' 'cairo>=1.2.0' 'libxcursor' 'libxrandr' 'libsm' \
	 'gnome-icon-theme')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc' 'cups')
archs=('i686' 'x86_64')
Finclude gnome
_F_cd_path="gtk+-$pkgver"
sha1sums=('aad6e1ef964d8acb8a04942b8dd2e00a9db56450')
Fconfopts="$Fconfopts --with-xinput=yes --enable-gtk-doc"

build() {
	Fbuild
	Fmkdir /etc/gtk-2.0
	echo 'gtk-fallback-icon-theme = "gnome"' > $Fdestdir/etc/gtk-2.0/gtkrc || Fdie
}

# optimization OK
