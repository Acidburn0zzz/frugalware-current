pkgname=gtk+2
realname=gtk+
pkgver=2.8.18
pkgrel=1
pkgdesc="The GTK+ Toolkit (2.x series)"
url="http://www.gtk.org/"
depends=('libtiff' 'atk>=1.10.3' 'libxi' 'libxinerama' 'fontconfig' 'libjpeg' \
	 'pango>=1.10.0' 'cairo' 'libxcursor' 'libxrandr')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
Finclude gnome
options=('scriptlet')
source=(http://ftp.gnome.org/pub/gnome/sources/gtk+/$preup2date/gtk+-$pkgver.tar.bz2)
sha1sums=('e4f0231b943418d8bb17b3bf9d79aa902ab3eb13')

build() {
	Fcd gtk+-$pkgver
	Fbuild --with-xinput=yes --enable-gtk-doc
}

# optimization OK
