pkgname=gtk+2
realname=gtk+
pkgver=2.10.2
pkgrel=2
pkgdesc="The GTK+ Toolkit (2.x series)"
url="http://www.gtk.org/"
depends=('libtiff' 'atk>=1.10.3' 'libxi' 'libxinerama' 'fontconfig' 'libjpeg' \
	 'pango>=1.13.2' 'cairo>=1.2.0' 'libxcursor' 'libxrandr' 'libsm' 'gnome-icon-theme')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
Finclude gnome
_F_cd_path="gtk+-$pkgver"
sha1sums=('6da7bc4440dd4f8b56cee4b3d3a4b3b582784341')
Fconfopts="$Fconfopts --with-xinput=yes --enable-gtk-doc"

build() {
	Fbuild
	Fmkdir /etc/gtk-2.0
	echo 'gtk-fallback-icon-theme = "gnome"' > $Fdestdir/etc/gtk-2.0/gtkrc || Fdie
}

# optimization OK
