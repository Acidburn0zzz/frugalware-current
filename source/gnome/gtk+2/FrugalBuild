# Compiling time: 7.45 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gtk+2
_F_gnome_name=gtk+
pkgver=2.10.7
pkgrel=1
pkgdesc="The GTK+ Toolkit (2.x series)"
url="http://www.gtk.org/"
depends=('libtiff' 'atk>=1.13.1' 'libxi' 'libxinerama' 'fontconfig' 'libjpeg' \
	 'pango>=1.15.3' 'cairo>=1.2.6' 'libxcursor' 'libxrandr' 'libsm')
rodepends=('gnome-icon-theme')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc' 'cups')
archs=('i686' 'x86_64')
Finclude gnome
_F_cd_path="gtk+-$pkgver"
sha1sums=('784a7ecc75767306efe1f200a1251968f944143e')
Fconfopts="$Fconfopts --with-xinput=yes --enable-gtk-doc"

build() {
	Fbuild
	Fmkdir /etc/gtk-2.0
	echo 'gtk-fallback-icon-theme = "gnome"' > $Fdestdir/etc/gtk-2.0/gtkrc || Fdie
}

# optimization OK
