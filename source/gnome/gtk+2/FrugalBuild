pkgname=gtk+2
realname=gtk+
pkgver=2.8.4
pkgrel=1
pkgdesc="The GTK+ Toolkit (2.x series)"
url="http://www.gtk.org/"
depends=('libtiff' 'atk>=1.10.3' 'pango>=1.10.0' 'libjpeg' 'libpng')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
[ -e ../up2date.gnome ] || preup2date=`echo $pkgver | cut -d . -f 1,2`
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$realname/$preup2date/$realname-$pkgver.tar.bz2 $pkgname.install)
sha1sums=('b2ea1f6ca230075ddedc888b633cbd8efe492bae' \
          '5363c6a33e5f4942746c97d7aa473cd8f0e992f9')

. /etc/profile.d/pkgconfig.sh

build()
{
	Fcd $realname-$pkgver
	Fbuild --with-xinput=yes --enable-gtk-doc
}

# vim: ft=sh

# optimalization OK
