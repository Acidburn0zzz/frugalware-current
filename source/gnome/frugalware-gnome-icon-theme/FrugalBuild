# Compiling Time: 0 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=frugalware-gnome-icon-theme
pkgver=1.4
pkgrel=1
pkgdesc="Official Frugalware Gnome Icon Theme (could be used for Xfce4)"
rodepends=('gnome-icon-theme')
depends=('icon-naming-utils' ' librsvg' 'libpng')
url="http://ftp.frugalware.org/pub/other/artwork/$pkgname"
groups=('gnome')
archs=('i686' 'x86_64' 'ppc')
up2date="Flasttar $url"
source=($url/$pkgname-$pkgver.tar.bz2)
sha1sums=('8940ec8cf14a38a283caf4edd523adc7d59d027c')

build()	{
	Fmkdir usr/share/icons
	Fcd $pkgname
	Fcprel Frugalware usr/share/icons/
	Fcprel Frugalware-Dark usr/share/icons/
	Fcprel Frugalware-Blue usr/share/icons/
}
