pkgname=vino
pkgver=2.12.0
pkgrel=2
pkgdesc="An integrated VNC server for GNOME"
url="http://www.gnome.org/"
depends=('libgnomeui' 'gnutls')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('84fd91acf281c0d9b002a70a69c79134d78743c5')

build() {
	Fmake --disable-schemas-install \
	    --enable-http-server --enable-session-support
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimization OK
