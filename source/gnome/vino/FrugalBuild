# Last modified: Tue, 14 Jun 2005 21:43:45 +0000
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=vino
pkgver=2.10.0
pkgrel=2
pkgdesc="An integrated VNC server for GNOME"
url="http://www.gnome.org/"
depends=('libgnomeui' 'gnutls')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('a9b5c811807e01e7fb420f52820f0150' '6641db86eeda37701d42f2813d559b61')

build() {
	Fcd
	Fmake --sysconfdir=/etc --disable-schemas-install \
	    --enable-http-server --enable-session-support || return 1
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# vim: ft=sh
