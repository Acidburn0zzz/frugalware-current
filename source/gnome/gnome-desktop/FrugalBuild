# Last modified: Wed, 12 Apr 2006 09:41:34 +0200
# Compiling time: 0.23 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gnome-desktop
pkgver=2.14.1.1
pkgrel=1
pkgdesc="The GNOME Desktop"
url="http://www.gnome.org/"
depends=('libgnomeui' 'startup-notification' 'scrollkeeper')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
options=('scriptlet')
sha1sums=('7daa0c613eee5fe0a7f35578c6eaad39cf458442')

build()
{
	Fcd
	Fsed '&copy;' '(C)' desktop-docs/fdl/C/fdl.xml
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	[ -f omf.make ]	&& Fsed '/-scrollkeeper-update.*' '' omf.make
	Fmake --with-gnome-distributor=Frugalware --disable-scrollkeeper
	Fmakeinstall
}

# optimalization OK
