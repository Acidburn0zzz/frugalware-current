# Last modified: Thu, 08 Sep 2005 01:32:09 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gnome-desktop
pkgver=2.12.0
pkgrel=3
pkgdesc="The GNOME Desktop"
url="http://www.gnome.org/"
depends=('libgnomeui' 'startup-notification' 'scrollkeeper')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
sha1sums=('5d33cb743758f011eee08ac1de36dbfa8b28992b' \
          '0e7c74aa6393110073ad033a9b152c85ced7bce1')

build()
{
	Fcd
	Fsed '&copy;' '(C)' desktop-docs/fdl/C/fdl.xml
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	[ -f omf.make ]	&& Fsed '/-scrollkeeper-update.*' '' omf.make
	Fmake --with-gnome-distributor=Frugalware || return 1
	Fmakeinstall || return 1
}

# vim: ft=sh

# optimalization OK
