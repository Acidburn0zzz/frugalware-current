pkgname=gnome-desktop
pkgver=2.15.2
pkgrel=1
pkgdesc="The GNOME Desktop"
url="http://www.gnome.org/"
depends=('libgnomeui' 'startup-notification' 'scrollkeeper')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
_F_gnome_scrollkeeper="y"
Finclude gnome gnome-scriptlet
options=('scriptlet')
sha1sums=('e40232214b96a76699b1f44a19ee1a2f6a1aa203')

build() {
	Fcd
	Fbuild_slice_scrollkeeper
	Fsed '&copy;' '(C)' desktop-docs/fdl/C/fdl.xml
	Fmake --with-gnome-distributor=Frugalware --disable-scrollkeeper
	Fmakeinstall
	Fbuild_gnome_scriptlet
}

# optimization OK
