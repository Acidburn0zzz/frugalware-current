build() {

	Fbuild

	Fbuild_gnome_scriptlet
	Fsplit cheese-devel usr/lib
	Fsplit cheese-devel usr/share/gir-1.0
	Fsplit cheese-devel usr/include
	_F_gnome_split_doc
}

