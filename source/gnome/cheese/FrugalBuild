url="http://www.gnome.org/projects/cheese"
depends=('clutter-gst3>=3.0.18 librsvg>=2.40.13-1 clutter-gtk>=1.6.6-2 libcanberra-gtk>=0.30-12' 'gnome-desktop>=3.20.0' \
	'gst1-plugins-bad-mpeg2enc>=1.8.0' 'gnome-video-effects' 'gst1-plugins-good-video4linux2>=1.8.0' \
	'gst1-plugins-good-vpx>=1.8.0' 'gst1-plugins-good-jpeg' 'gst1-plugins-base-vorbis')
makedepends=('intltool>=0.51.0-2' 'gobject-introspection>=1.48.0' 'itstool>=2.0.2-3' 'vala>=0.32.0')
groups=('gnome')
archs=('i686' 'x86_64')
rodepends=('cheese-devel>=3.18.1-2')

subpkgs=('cheese-devel')
subdescs=('Developement files for cheese')
subdepends=('clutter-gst3>=3.0.18 librsvg>=2.40.13-1 clutter-gtk>=1.6.6-2 libcanberra-gtk>=0.30-12')
