	'libcanberra-gtk>=0.30-15' 'librsvg>=2.40.17' 'gnome-video-effects' 'gst1-plugins-good-video4linux2>=1.9.2-2' \
	'gst1-plugins-good-vpx>=1.9.2-2' 'gst1-plugins-good-jpeg>=1.9.2-2' 'gst1-plugins-base-vorbis>=1.9.2-2')
