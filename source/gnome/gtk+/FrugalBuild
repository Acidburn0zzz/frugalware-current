pkgname=gtk+
pkgver=1.2.10
pkgrel=1
pkgdesc="The GTK+ toolkit"
url="http://www.gtk.org/"
depends=('libtiff' 'libpng' 'libjpeg' 'freetype2' 'x' 'glib')
preup2date=`echo $pkgver|cut -d . -f 1`.`echo $pkgver|cut -d . -f 2`
up2date=`lynx -dump http://freshmeat.net/projects/glib/?branch_id=3342|grep ]1|sed -n '1 p'|cut -d ] -f 2|cut -d ' ' -f 1`
source=(ftp://ftp.gtk.org/pub/gtk/v$preup2date/$pkgname-$pkgver.tar.gz)
md5sums=('4d5cb2fc7fb7830e4af9747a36bfce20')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --with-glib-prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
