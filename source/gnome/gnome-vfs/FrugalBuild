pkgname=gnome-vfs
pkgver=2.12.1.1
pkgrel=1
pkgdesc="GNOME Virtual File System"
url="http://www.gnome.org/"
depends=('gconf' 'libbonobo' 'bzip2' 'cdparanoia' 'heimdal' 'samba' 'hal' \
	'gnome-mime-data' 'gamin' 'pmount' 'dbus')
makedepends=('intltool' 'gtk-doc')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	00-default-browser.patch \
	02-user-visible-drives.patch)
sha1sums=('48e484663f0d0f5e2a858d2f6e6a5a702e831734' \
	  'c83d61988a083c3906b0ce806bb41beb7b628af2' \
	  '6570dfb9cb50c8f4ca03a7bcf6c4cf8b0e523214')

build()
{
	Fpatchall
	Fautoconfize
	Fmake --disable-schemas-install --enable-gtk-doc
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

