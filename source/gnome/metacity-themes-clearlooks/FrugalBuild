pkgname=metacity-themes-clearlooks
pkgver=0.6
pkgextraver=
pkgrel=2
pkgdesc="Clearlooks Metacity theme"
url="http://clearlooks.sourceforge.net/"
depends=()
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/clearlooks/?sort_by=date&sort=desc'|grep metacity|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/clearlooks/clearlooks-metacity-$pkgver.tar.gz \
	http://dl.sourceforge.net/sourceforge/clearlooks/clearlooks-metacity-extra-$pkgver.tar.gz)
sha1sums=('9fc9f3bbdae064aba4a00ebc37b87a14ee99f4e5' \
	  '06bcc78fb22ab9447dbc4cb6f34e16c1371d8bec')

build()
{
	Fcd ""
	Fmkdir /usr/share/themes
	mv Clearlooks* $Fdestdir/usr/share/themes
}

