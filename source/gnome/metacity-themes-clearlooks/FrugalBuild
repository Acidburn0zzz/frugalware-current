pkgname=metacity-themes-clearlooks
pkgver=0.5.2
pkgextraver=a
pkgrel=1
pkgdesc="Clearlooks Metacity theme"
url="http://www.gnome-look.org/content/show.php?content=21237"
depends=()
groups=('gnome' 'gnome-core')
up2date=`lynx -dump "http://www.gnome-look.org/content/show.php?content=21237"|grep Version|sed -n -e 's/.*: \(.*\)$/\1/' -e '1 p'`
source=(http://www.gnome-look.org/content/files/21237-clearlooks-metacity-$pkgver$pkgextraver.tar.gz)
md5sums=('f585a64fe9a170cea9cb88d7e43617cd')

build()
{
	Fcd ""
	Fmkdir /usr/share/themes
	mv Clearlooks $Fdestdir/usr/share/themes
}

