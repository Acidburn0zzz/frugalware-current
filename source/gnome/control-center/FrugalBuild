pkgname=control-center
pkgver=2.14.0
pkgrel=1
pkgdesc="GNOME Control Center"
url="http://www.gnome.org/"
depends=('gnome-desktop' 'gnome-menus' 'metacity' 'libxklavier' 'nautilus' \
	'gst-plugins-base' 'desktop-file-utils' 'evolution-data-server')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
sha1sums=('2690b0ce1c86758658d1b1b4ccbebb9d97dbe890')

build() {
        find . -name Makefile.in -exec sed -i -e 's/scrollkeeper-update/echo/' {} \;
	if [ -f omf.make ]; then
	    sed -i -e 's/scrollkeeper-update/echo/' omf.make
	fi
	Fpatchall
	Fconf --disable-schemas-install --enable-aboutme --enable-gstreamer --disable-scrollkeeper
#	sed -i 's|^\(GNOMECC_CAPPLETS_CFLAGS.*\)|\1 -I/usr/include/evolution-data-server-1.6|' Makefile
#	sed -i 's|^\(GNOMECC_CAPPLETS_LIBS.*\)|\1 -lebook-1.2|' Makefile
	make || Fdie
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Frm /usr/share/applications/mimeinfo.cache
}

# optimalization OK
