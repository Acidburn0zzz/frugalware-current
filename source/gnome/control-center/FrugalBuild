pkgname=control-center
pkgver=2.14.2
pkgrel=1
pkgdesc="GNOME Control Center"
url="http://www.gnome.org/"
depends=('gnome-desktop' 'gnome-menus' 'metacity' 'libxklavier' 'nautilus' \
	'gst-plugins-base' 'desktop-file-utils' 'evolution-data-server')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
sha1sums=('56f9dba38247712af97af6ec27cf6d4c7eca4206')

build() {
        find . -name Makefile.in -exec sed -i -e 's/scrollkeeper-update/echo/' {} \;
	if [ -f omf.make ]; then
	    sed -i -e 's/scrollkeeper-update/echo/' omf.make
	fi
	Fpatchall
	Fmake --disable-schemas-install --enable-aboutme --enable-gstreamer --disable-scrollkeeper
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Frm /usr/share/applications/mimeinfo.cache
}

# optimization OK
