pkgname=gsf-sharp
pkgver=0.8
pkgrel=1
pkgdesc="Mono bindings for libgsf"
url="http://www.mono-project.com"
depends=('libgsf' 'gtk2-sharp' 'libxml2')
makedepends=('pkgconfig')
options=('scriptlet')
groups=('gnome' 'gnome-core')
archs=('i686')
up2date="$pkgver" ## for now
source=(http://primates.ximian.com/~joe/$pkgname-$pkgver.tar.gz)
sha1sums=('558f5d905f6d220bcd5bb8b8eb8b64ad732aea9a')

build()
{
        Fcd
        export MONO_SHARED_DIR=$startdir/pkg/weird
        mkdir -p $MONO_SHARED_DIR
        Fbuild
        rm -rf $MONO_SHARED_DIR
}


# optimization OK
