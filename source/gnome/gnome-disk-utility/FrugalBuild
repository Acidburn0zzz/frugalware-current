options=('scriptlet')
_F_gnome_iconcache="y"
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="y"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
sha1sums=('ed05b75ef35481a9e3f378bfd5e929bcfb9d3012')

conflicts=('gnome-format')
