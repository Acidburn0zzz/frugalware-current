# Last modified: Fri, 01 Apr 2005 11:46:08 +0200
# Compiling time: ~2 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libgnomeprint
pkgver=2.10.3
pkgrel=1
pkgdesc="GNOME printing library"
url="http://www.gnome.org/"
depends=('libart_lgpl' 'pango' 'libxml2' 'libgnomecups')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
[ -e ../up2date.gnome ] && . ../up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
md5sums=('9052dc919ad038b1a9e4d5301148588e')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-gtk-doc

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
