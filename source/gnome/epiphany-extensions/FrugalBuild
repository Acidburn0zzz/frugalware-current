pkgname=epiphany-extensions
pkgver=2.15.1
pkgrel=1
pkgdesc="Extensions for epiphany web browser"
url="http://www.gnome.org/projects/epiphany/extensions"
depends=('opensp' 'nss' 'pcre' 'epiphany' 'gnome-doc-utils')
makedepends=('perl-xml')
Finclude gnome
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
license="GPL2"
groups=('gnome-extra')
archs=('x86_64' 'i686')
sha1sums=('4e66311b1464d42531f609143289754e7bf8db96')

build()
{
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
	    sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fmake --with-gecko=firefox --disable-scrollkeeper \
		--with-extensions=really-all \
		--disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimization OK

