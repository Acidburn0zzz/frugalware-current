# Last Modified: Thu Sep  2 13:50:01 CEST 2004
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=gfxboot
pkgver=2.4r41
themever=0.2
pkgrel=1
pkgdesc="Graphical boot logo for lilo and syslinux"
url="ftp://ftp.suse.com/pub/suse/i386/current/suse/src/"
depends=('glibc' 'perl')
makedepends=('alien')
up2date=`wget --passive-ftp -O - -q $url |grep gfxboot|sed -e 's/.*t-\(.*\)\.s.*/\1/' -e 's/-/r/'`
source=(ftp://ftp.suse.com/pub/suse/i386/current/suse/src/gfxboot-`echo $pkgver|sed 's/r/-/g'`.src.rpm frugalware-grub-theme-$themever.tar.gz)
md5sums=('e0ba1e740dd101f3bab93c3d9026c11b' 'c583001ebad1aaa59f993406919d770b')

build() {
	cd $startdir/src/
	alien -t gfxboot-`echo $pkgver|sed 's/r/-/'`.src.rpm
	tar xvzf gfxboot-`echo $pkgver|sed 's/r.*$//'`.tgz
	tar xvjf gfxboot-`echo $pkgver|sed 's/r.*$//'`.tar.bz2
	cd $pkgname-`echo $pkgver|sed 's/r.*$//'`

	make || return 1

	cp -a ../themes ./
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
