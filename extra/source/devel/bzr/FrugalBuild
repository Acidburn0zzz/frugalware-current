pkgname=bzr
pkgver=0.0.5
pkgrel=1
pkgdesc="Next generation distributed version control"
url="http://bazaar-ng.org/"
depends=('elementtree' 'urlgrabber')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download.html|grep tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/'"
source=($url/pkg/$pkgname-$pkgver.tar.gz)
md5sums=('f18a8f3f3d22c65629771c9b3b8f6428')

