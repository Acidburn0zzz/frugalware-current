pkgname=bzr
pkgver=0.0.8
pkgrel=1
pkgdesc="Next generation distributed version control"
url="http://bazaar-ng.org/"
depends=('elementtree' 'urlgrabber')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://bazaar-ng.org/pkg/?C=M;O=D' |grep ]bzr-|sed -n -e 's/.*bzr-\([0-9.\].*\)\.tar\.gz.*/\1/' -e '1 p'"
source=($url/pkg/$pkgname-$pkgver.tar.gz)
sha1sums=('4bc355b0701a36d398b1213ca0d78ae5425d8475')

build()
{
	Fcd
	rm -f Makefile
	Fbuild
}

