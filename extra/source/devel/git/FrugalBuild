# Last Modified: Wed, 11 May 2005 17:07:10 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=git
pkgver=0.7
pkgrel=1
pkgdesc="the stupid content tracker"
url="http://www.kernel.org/pub/software/scm/git/"
depends=('curl')
groups=('devel-extra')
up2date="lynx -dump \"$url/?C=M;O=D\"|grep bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.bz2)
md5sums=('036e3a031d03d1cb4ac4cbe16cca141b')

build()
{
	Fsed '-O2' "$CFLAGS" Makefile
	Fsed '$(HOME)' '$(DESTDIR)/usr' Makefile
	Fmkdir /usr/bin
	Fbuild || return 1
}

# optimalization ok

