pkgname=graphviz
pkgver=2.6
pkgrel=2
pkgdesc="Graphviz is open source graph visualization software"
url="http://www.graphviz.org/"
depends=('expat' 'x' 'tk' 'guile' 'php' 'gd' 'perl')
makedepends=('python')
archs=('i686' 'x86_64')
groups=('devel-extra')
install=$pkgname.install
up2date="lynx -dump $url/Download_source.php|grep tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=(http://www.graphviz.org/pub/$pkgname/ARCHIVE/$pkgname-$pkgver.tar.gz)
sha1sums=('062897f364c905f33852caff93899df97c817def')

build() 
{
	Fbuild --disable-dependency-tracking --with-x --with-gnu-ld
}

# optimalization OK

