pkgname=mingw-w32api-headers
pkgver=3.3
pkgrel=1
pkgdesc="Free headers for the Win32 API"
url="http://www.mingw.org"
depends=()
groups=('devel-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=2435|grep w32api-|sed 's/.*i-\(.*\)-s.*/\1/;s/-/_/g;q'"
source=(http://dl.sourceforge.net/sourceforge/mingw/w32api-$pkgver-src.tar.gz)
sha1sums=('67a4cee21d43b83ae508d874f783dd153c4ada0f')

build()
{
	Fcd w32api-$pkgver
	Fmkdir /usr/lib/mingw/i386-mingw32msvc/
	cp -r include $Fdestdir/usr/lib/mingw/i386-mingw32msvc/include
}

