pkgname=sip
pkgver=4.2.1
pkgrel=1
pkgdesc="SIP is a tool that makes it very easy to create Python bindings for C and C++ libraries"
url="http://www.riverbankcomputing.co.uk/sip/index.php"
makeconflicts=('nvidia')
makedepends=('qt')
depends=('qt')
groups=('devel-extra')
up2date="lynx -dump http://www.riverbankcomputing.co.uk/sip/download.php |grep sip.*.tar |sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://www.river-bank.demon.co.uk/download/sip/$pkgname-$pkgver.tar.gz)
md5sums=('552d8487ab419320b2bdb50f45d256ca')

build() {
	Fcd
	python configure.py || return 1
	Fmake || return 1
	Fmakeinstall
}

# optimalization OK

