# Maintainer: Zoltan Kiss <djsmiley@inflame.hu>

pkgname=perl-archive-tar
pkgver=1.25
pkgrel=1
pkgdesc="Perl module for manipulations of tar archives"
url="http://cpan.org/"
makedepends=('perl')
depends=('perl' 'perl-io-zlib')
groups=('devel-extra')
archs=('i686')
up2date="lynx -dump 'http://search.cpan.org/~kane/' |grep 'Archive-Tar-' |sed 's/.*Tar-\(.*\)\ mod.*/\1/;q'"
source=(http://search.cpan.org/CPAN/authors/id/K/KA/KANE/Archive-Tar-$pkgver.tar.gz)
sha1sums=('5f5002ab0922757c82a92b7e154976382b512a6a')

build() {
	cd $startdir/src/Archive-Tar-$pkgver
	perl Makefile.PL
	
	make || return 1
	make test
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

