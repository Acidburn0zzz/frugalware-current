pkgname=perl-gnome2-vfs
pkgver=1.041
pkgrel=1
pkgdesc="Perl interface to the 2.x series of the GNOME VFS library"
depends=('perl-gtk2' 'gnome-vfs')
makedepends=('perl-extutils-depends' 'perl-extutils-pkgconfig')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/search?query=gnome2%3A%3Avfs&mode=all'|grep VFS-|sed -n 's/.*VFS-\([^ ]*\) -.*/\1/;1 p'"
source=(http://search.cpan.org/CPAN/authors/id/T/TS/TSCH/Gnome2-VFS-$pkgver.tar.gz)
sha1sums=('0dc999c2b7d013a94c4966b5edeede9650821407')

build()
{
	Fcd Gnome2-VFS-$pkgver
	Fbuild
	Frm /usr/lib/perl5/current
}

# optimalization ok
# tests will fail if you re not root

