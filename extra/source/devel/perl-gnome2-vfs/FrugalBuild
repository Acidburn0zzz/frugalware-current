# Last Modified: Tue, 06 Sep 2005 11:22:04 +0200
# Compiling Time: ~0.4 SBU 
# Maintainer: Zsolt Szalai <xbit.lists@chello.hu>

pkgname=perl-gnome2-vfs
pkgver=1.040
pkgrel=1
pkgdesc="Perl interface to the 2.x series of the GNOME VFS library"
depends=('perl-gtk2' 'gnome-vfs')
#makedepends=('perl-extutils-depends' 'perl-extutils-pkgconfig')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/search?query=gnome2%3A%3Avfs&mode=all'|grep VFS-|sed -n 's/.*VFS-\([^ ]*\) -.*/\1/;1 p'"
source=(http://search.cpan.org/CPAN/authors/id/T/TS/TSCH/Gnome2-VFS-$pkgver.tar.gz)
sha1sums=('73d4c665520e042d78d405e020f38401c2bcf4f3')

build() {
	cd $startdir/src/Gnome2-VFS-$pkgver
	perl Makefile.PL
	
	make test
	make || return 1
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? $startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization ok
# tests will fail if you re not root

# vim: ft=sh
