pkgname=perl-gtk2
pkgver=1.122
pkgrel=1
pkgdesc="Perl interface to the 2.x series of the Gimp Toolkit library"
url="http://search.cpan.org/search?query=gtk2&mode=all"
depends=('gtk+2' 'perl-glib>=1.101')
makedepends=('perl-extutils-depends' 'perl-extutils-pkgconfig')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/search?query=gtk2&mode=all'|grep \"tk2-\"|sed -n 's/.*tk2-\([^ ]*\) -.*/\1/;1 p'"
source=(http://search.cpan.org/CPAN/authors/id/T/TS/TSCH/Gtk2-$pkgver.tar.gz)

build()
{
	Fcd Gtk2-$pkgver
	Fbuild
	Frm /usr/lib/perl5/current
}

# optimization OK

sha1sums=('33abbf322764f0a0f105dc60476ecb3ad74ba80f')
