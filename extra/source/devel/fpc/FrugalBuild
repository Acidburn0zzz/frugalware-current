# Last Modified: Fri, 29 Jul 2005 13:58:54 +0200
# Compiling Time: ~1.01 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=fpc
pkgver=2.0.0
pkgrel=1
pkgdesc="FreePascal Compiler"
url="http://www.freepascal.org"
depends=('gpm')
makedepends=('fpc-bin')
groups=('devel-extra')
conflicts=('fpc-bin')
archs=('x86_64')
up2date="lynx -dump $url |grep 'latest stable' |sed 's/.*Version \(.*\) is.*/\1/'"
source=(ftp://ftp.freepascal.org/pub/fpc/dist/source-$pkgver/$pkgname-$pkgver.source.tar.gz)
md5sums=('3f9c64d0146a3631f6963fd7477776d1')

build()
{
	Fcd $pkgname
	make all || return 1
	make PREFIX=$Fdestdir/usr install || return 1
        Fln /usr/lib/fpc/$pkgver/ppcx64 /usr/bin/ppcx64
}

# vim: ft=sh
