pkgname=perl-event
pkgver=1.06
pkgrel=1
pkgdesc="perl module that provides framework for multiple event loops"
url="http://search.cpan.org/search?query=AnyEvent&mode=all"
depends=('perl')
groups=('devel-extra')
archs=('i686')
up2date="lynx -dump http://mirror.gnowledge.org/cpan/authors/id/J/JP/JPRIT/ | grep Event-1 | Flasttar"
source=(http://search.cpan.org/CPAN/authors/id/J/JP/JPRIT/Event-1.06.tar.gz)
sha1sums=('6053a97f6dc6f5ecf80a165987c933050df5457b')

build() {
	cd $Fsrcdir/Event-$pkgver
	Fconf
	make test
	make || return 1
	Fmakeinstall
}

# optimization OK
