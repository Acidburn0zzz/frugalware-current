# Last Modified: Fri, 29 Jul 2005 12:32:22 +0200
# Compiling Time: ~0.5 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=fpc-bin
pkgver=2.0.0
pkgrel=1
pkgdesc="FreePascal Compiler (Binary version)"
url="http://www.freepascal.org"
depends=('gpm')
conflicts=('fpc')
archs=('x86_64')
groups=('devel-extra')
up2date="lynx -dump $url |grep 'latest stable' |sed 's/.*Version \(.*\) is.*/\1/'"
source=(ftp://ftp.freepascal.org/pub/fpc/dist/$CARCH-linux-$pkgver/`echo $pkgname | sed 's/-bin//'`-$pkgver.${CARCH}-linux.tar)
md5sums=('36270de604c6b5ad3af8aaa08143e88f')

build()
{
	cd $Fsrcdir || return 1
	mkdir $Fsrcdir/$pkgname || return 1
	tar -xf binary.${CARCH}-linux.tar -C $pkgname || return 1
	cd $Fsrcdir/$pkgname || return 1
	Fmkdir /usr
	for i in `ls -1`
	do
	    tar -xzf $i -C ${Fdestdir}/usr
	done
	Fln /usr/lib/fpc/$pkgver/ppcx64 /usr/bin/ppcx64
}

# vim: ft=sh

# optimalization OK
