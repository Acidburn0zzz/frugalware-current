pkgname=adodb
pkgver=4.80
realver=`echo $pkgver|sed 's/\.//g'`
pkgrel=1
pkgdesc="A PHP database class library to hide the differences between the different databases."
url="http://adodb.sourceforge.net/"
rodepends=('php')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=42718'|grep for-php|sed 's/.*-\(.*\)-for.*/\1/;q'"
source=(http://dl.sourceforge.net/sourceforge/adodb/adodb$realver.tgz)
sha1sums=('ffa4b1e4bda6dfb1c850436824ace1d94ebe6720')

build()
{
	Fcd $pkgname
	for i in `find . -name '*.php' -print`
	do
		Ffilerel $i /usr/lib/php/adodb/$i
	done
	Ffilerel xsl/*.xsl /usr/lib/php/adodb/xsl/
	Fdocrel docs/*
	Fdocrel *.txt xmlschema.dtd session/adodb-sess.txt pear/readme.Auth.txt
}
