pkgname=perl-term-readline-gnu
pkgver=1.15
pkgrel=1
pkgdesc="Perl extension for the GNU Readline/History Library"
depends=('termcap' 'readline' 'perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/~hayashi/'|grep Gnu-|sed -n 's/.*Gnu-\([^ ]*\) P.*/\1/;1 p'"
source=(http://search.cpan.org/CPAN/authors/id/H/HA/HAYASHI/Term-ReadLine-Gnu-$pkgver.tar.gz)
md5sums=('33c96145ee94576e10eb0f1fd1b613d0')

build() {
	cd $startdir/src/Term-ReadLine-Gnu-$pkgver
	perl Makefile.PL
	
	make test
	make || return 1
		
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? $startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

