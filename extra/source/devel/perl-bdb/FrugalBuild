pkgname=perl-bdb
modname=BerkeleyDB
modauthor=P/PM/PMQS
pkgver=0.28
pkgrel=1
pkgdesc="Perl extension for Berkeley DB version 2, 3 or 4"
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
url="http://cpan.org/"
up2date="pud -p 'http://search.cpan.org/search?query=$(echo $modname |sed s/-/::/g)&mode=all' -e '$modname-(.*?) '"
source=(http://search.cpan.org/CPAN/authors/id/$modauthor/$modname-$pkgver.tar.gz)

build()
{
        Fcd $modname-$pkgver
        Fbuild
        Frm /usr/lib/perl5/current
}

sha1sums=('6acc85c4e552fe7477a2be996a5f6ee055c6daf7')

# optimization OK
