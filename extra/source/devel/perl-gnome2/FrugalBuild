pkgver=1.040
pkgrel=1
pkgdesc="The Gnome2 module allows a perl developer to use the Gnome libraries."
license="LGPL2"
modname=Gnome2
modauthor=T/TS/TSCH
Finclude perl
# perl.sh up2date gives an perl error (Can't locate LWP.pm in @INC)
up2date="lynx -dump $url|grep -m 1 -o 'Gnome2-[0-9\.]\+'|sed 's/Gnome2-//'"
sha1sums=('60354e8ede387be96a43973fdb976d90c60d1b34')
groups=('devel-extra')
archs=('i686' 'x86_64')
depends=('perl-gnome2-canvas' 'perl-gnome2-vfs' 'libgnomeui' 'libsm')
makedepends=('perl-extutils-depends' 'perl-extutils-pkgconfig')

