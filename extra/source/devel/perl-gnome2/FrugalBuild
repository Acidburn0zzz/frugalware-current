pkgname=perl-gnome2
pkgver=1.023
pkgrel=1
pkgdesc="The Gnome2 module allows a perl developer to use the Gnome libraries."
url="http://search.cpan.org/~tsch/"
license="LGPL2"
up2date="lynx -dump $url | grep -m 1 'Gnome2-[0-9]' | cut -d ' ' -f 4 | cut -d - -f 2,"
source=(http://search.cpan.org/CPAN/authors/id/T/TS/TSCH/Gnome2-$pkgver.tar.gz)
sha1sums=('ad7172a03ca4a6b94bb2f7592abce5bb9ed41101')
groups=('devel-extra')
archs=('i686')
depends=('perl-gnome2-canvas' 'perl-gnome2-vfs')

build()
{
	Fcd Gnome2-$pkgver
	Fbuild
	Frm /usr/lib/perl5/current
}

