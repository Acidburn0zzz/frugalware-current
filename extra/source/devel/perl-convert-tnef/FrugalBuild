pkgname=perl-convert-tnef
pkgver=0.17
pkgrel=1
pkgdesc="Perl module to read TNEF files"
url="http://cpan.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686')
up2date="lynx -dump 'http://search.cpan.org/~dougw/' |grep 'Convert-TNEF-' |sed 's/.*TNEF-\(.*\)\ P.*/\1/;q'"
source=(http://search.cpan.org/CPAN/authors/id/D/DO/DOUGW/Convert-TNEF-$pkgver.tar.gz)
sha1sums=('c88cbda33e2bb5b12b36d7e8a1824dbad4080d30')

build() {
	cd $startdir/src/Convert-TNEF-$pkgver
	perl Makefile.PL
	
	make || return 1
	make test
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

