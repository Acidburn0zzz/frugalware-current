# Compiling Time: 0.05 SBU
# Maintainer: # Maintainer: Karoly CZOVEK <slinky@rei.keni.hu>

pkgname=perl-pod-simple
pkgver=3.02
pkgrel=1
pkgdesc="framework for parsing Pod"
url="http://cpan.org/"
makedepends=('perl' 'perl-pod-escapes')
depends=('perl' 'perl-pod-escapes')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/~sburke/' |grep 'Pod-Simple-' |sed 's/.*Simple-\(.*\)\ frame.*/\1/;q'"
source=(http://search.cpan.org/CPAN/authors/id/S/SB/SBURKE/Pod-Simple-$pkgver.tar.gz)
sha1sums=('4cd8dfdc30eef20accde0465af2a49f62471103c')

build() {
	cd $startdir/src/Pod-Simple-$pkgver
	perl Makefile.PL
	
	make || return 1
	make test
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

