# Compiling Time: 0.09 SBU
# Maintainer: crazy <malagarax@gmx.net>

pkgname=apr-util
pkgver=1.2.2
pkgrel=1
pkgdesc="Apache Portable Runtime"
url="http://apr.apache.org/"
depends=('apr' 'db' 'gdbm' 'expat')
makedepends=('postgresql' 'sqlite3' 'sqlite2')
groups=('devel-extra')
archs=('i686')
up2date="lynx -dump $url/download.cgi|grep tar.gz$ |sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=(http://www.artfiles.org/apache.org/apr/$pkgname-$pkgver.tar.bz2)
sha1sums=('1928fde55a81cef07c6e60bfa3d796d26f534f48')

build()
{
	Fprefix=/usr/lib/apr-util
	Fbuild --with-{apr=/usr/lib/apr,gdbm,expat=/usr,berkeley-db,threads} \
		--enable-layout=RedHat --with-{pgsql,sqlite3,sqlite2} 
}

# vim: ft=sh

# optimalization OK
