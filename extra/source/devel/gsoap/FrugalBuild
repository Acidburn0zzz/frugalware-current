pkgname=gsoap
pkgver=2.7.8b
pkgrel=1
pkgdesc="A cross-platform development environment for C and C++ SOAP/XML Web services."
depends=('libstdc++')
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="gsoap2"
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=52781|grep stable |sed 's/.*P \(.*\) s.*/\1/;q'"
source=(${source%gs*}/${pkgname}_$pkgver.tar.gz gsoap-2.7.8-gcc41.diff)

build()
{
	unset MAKEFLAGS
	Fcd $pkgname-${pkgver%.*}
	Fbuild
}

# optimization OK
sha1sums=('4196d7b64ff04595efa7067891731b7f76c85f78' \
	  '1e597ec14f6e84f18ee5c59c302b1742036540a2')
