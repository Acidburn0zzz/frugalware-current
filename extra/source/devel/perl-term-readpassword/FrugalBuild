# Compiling Time: ~0.1 SBU
# Maintainer: Zsolt Szalai <xbit@frugalware.org>

pkgname=perl-term-readpassword
pkgver=0.06
pkgrel=1
pkgdesc="Asking the user for a password"
url="http://cpan.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
up2date=`lynx -dump 'http://search.cpan.org/~phoenix/' |grep 'word' |sed 's/.*word-\(.*\) A.*/\1/;1 q'`
source=(http://search.cpan.org/CPAN/authors/id/P/PH/PHOENIX/Term-ReadPassword-$pkgver.tar.gz)
sha1sums=('b9c352f958959cec1d8fed1e1be1ff4d83faef62')

build() {
        cd $startdir/src/Term-ReadPassword-$pkgver
        perl Makefile.PL

        make test
        make || return 1

        make install DESTDIR=$startdir/pkg
        mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
                $startdir/pkg/usr/lib/perl5/site_perl/current
        rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
        find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}


# vim: ft=sh
