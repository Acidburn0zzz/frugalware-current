# Compiling Time: ~0.01 SBU
# Maintainer: Zoltan Kiss <djsmiley@inflame.hu>

pkgname=perl-test-pod
pkgver=1.22
pkgrel=1
pkgdesc="check for POD errors in files"
url="http://cpan.org/"
makedepends=('perl' 'perl-pod-simple' 'perl-test-builder-tester')
depends=('perl' 'perl-pod-simple' 'perl-test-builder-tester')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/~petdance/' |grep 'Test-Pod-' |sed 's/.*Pod-\(.*\)\ c.*/\1/;q'"
source=(http://search.cpan.org/CPAN/authors/id/P/PE/PETDANCE/Test-Pod-$pkgver.tar.gz)
sha1sums=('ab725905d1906117412c48fe3fb5485bc47f11db')

build() {
	cd $startdir/src/Test-Pod-$pkgver
	perl Makefile.PL
	
	make || return 1
	make test
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

