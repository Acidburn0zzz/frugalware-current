# Last Modified: Sat, 24 Sep 2005 08:59:34 +0200
# Compiling Time: ~1 min
# Maintainer: Szabo Peter (pete [at] teamlupus.hu)

pkgname=tablelist
pkgver=4.1
pkgrel=1
pkgdesc="The Multi-Column Listbox Package"
url="http://www.nemethi.privat.t-online.de/tablelist/index.html"
depends=('tk')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.nemethi.privat.t-online.de/ | grep Tablelist|sed -n 's/.*t \(.*\)/\1/;1 p'"
source=(http://www.nemethi.privat.t-online.de/tablelist/tablelist$pkgver.tar.gz)
sha1sums=('ab9f06b701c5551499da363ac00b076651c0517a')

build() {
    mkdir -p $startdir/pkg/usr/lib/tcl8.4/tablelist$pkgver
    cp -r $startdir/src/tablelist$pkgver/* $startdir/pkg/usr/lib/tcl8.4/tablelist$pkgver
}

