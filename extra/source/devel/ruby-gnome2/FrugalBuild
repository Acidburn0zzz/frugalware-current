pkgname=ruby-gnome2
pkgver=0.13.0
pkgrel=1
pkgdesc="Ruby language bindings for Gnome environment"
url="http://ruby-gnome2.sourceforge.jp/"
depends=('gst-plugins' 'gnome-panel' 'librsvg' 'gtksourceview' 'ruby-gtk2' 'libgtkhtml')
groups=('devel-extra')
archs=('i686')
source=(http://download.sourceforge.net/ruby-gnome2/ruby-gnome2-all-$pkgver.tar.gz)
up2date='lynx -dump "http://sourceforge.net/project/showfiles.php?group_id=53614" | grep ruby-gnome2-all.*.tar.gz | head -n 1 | sed "s/.*ruby-gnome2-all-\(.*\).tar.gz.*/\1/"'
sha1sums=('73c618c27ef62b0b323887a9b1bdca76c57d3105')

build() {
	Fcd ruby-gnome2-all-$pkgver
	Fconf
	Fsed ' atk ' ' ' Makefile
	Fsed ' gdkpixbuf ' ' ' Makefile
	Fsed ' glib ' ' ' Makefile
	Fsed ' gtk ' ' ' Makefile
	Fsed ' pango ' ' ' Makefile
	make
	Fmakeinstall
}

# optimalization OK

