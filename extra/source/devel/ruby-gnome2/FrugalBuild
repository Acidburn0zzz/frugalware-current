pkgname=ruby-gnome2
pkgver=0.14.0
pkgrel=1
pkgdesc="Ruby language bindings for Gnome environment"
url="http://ruby-gnome2.sourceforge.jp/"
depends=('gst-plugins' 'gnome-panel' 'atk' 'librsvg' 'gtksourceview' 'ruby' 'libgtkhtml' 'ruby-gtk2')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date='lynx -dump "http://sourceforge.net/project/showfiles.php?group_id=53614" | grep ruby-gnome2-all.*.tar.gz | head -n 1 | sed "s/.*ruby-gnome2-all-\(.*\).tar.gz.*/\1/"'
source=(http://heanet.dl.sourceforge.net/ruby-gnome2/ruby-gnome2-all-$pkgver.tar.gz)
sha1sums=('a3a238dc13602685df25bf658ef4712ccd33af52')

build() {
	Fcd ruby-gnome2-all-$pkgver
	Fconf
	Fsed ' atk ' ' ' Makefile
	Fsed ' gdkpixbuf ' ' ' Makefile
	Fsed ' glib ' ' ' Makefile
	Fsed ' gtk ' ' ' Makefile
	Fsed ' pango ' ' ' Makefile
	make || return 1
	find */* -name \*.rb -exec sed -i -e 's|/usr/local/bin/ruby|/usr/bin/ruby|' {} \; || return 1
	make DESTDIR=$Fdestdir libdir=$Fdestdir/lib install || return 1
}

# optimalization OK

