pkgname=perl-gnome2-wnck
pkgver=0.10
pkgrel=1
pkgdesc="Perl interface to the Window Navigator Construction Kit"
depends=('perl' 'libwnck')
#makedepends=('perl-extutils-depends' 'perl-extutils-pkgconfig')
groups=('devel-extra')
up2date="lynx -dump 'http://search.cpan.org/search?query=gnome2%3A%3Awnck&mode=all'|grep nck-|sed -n 's/.*nck-\([^ ]*\) -.*/\1/;1 p'"
source=(http://search.cpan.org/CPAN/authors/id/T/TS/TSCH/Gnome2-Wnck-$pkgver.tar.gz)
md5sums=('ab0e6711a8207fd4e16d6c5b3c179fa7')

build() {
	cd $startdir/src/Gnome2-Wnck-$pkgver
	perl Makefile.PL
	
	make test
	make || return 1
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? $startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization ok