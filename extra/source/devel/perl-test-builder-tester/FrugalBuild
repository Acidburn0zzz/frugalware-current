# Last Modified: Thu, 18 Aug 2005 17:18:59 +0000
# Compiling Time: ~0.01 SBU
# Maintainer: Karoly CZOVEK <slinky@rei.keni.hu>

pkgname=perl-test-builder-tester
pkgver=1.01
pkgrel=1
pkgdesc="test testsuites that have been built with Test::Builder"
url="http://cpan.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/~markf/' |grep 'Test-Builder-Tester-' |sed 's/.*Tester-\(.*\)\ test\ .*/\1/;q'"
source=(http://search.cpan.org/CPAN/authors/id/M/MA/MARKF/Test-Builder-Tester-$pkgver.tar.gz)
sha1sums=('b767668eec5755f3a3bbee3ac592147e75feb29e')

build() {
	cd $startdir/src/Test-Builder-Tester-$pkgver
	perl Makefile.PL
	
	make || return 1
	make test
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

