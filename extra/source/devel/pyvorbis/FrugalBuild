pkgname=pyvorbis
pkgver=1.3
pkgrel=1
pkgdesc="python bindings for the vorbis library"
url="http://www.andrewchatham.com/pyogg/"
source=(http://www.andrewchatham.com/pyogg/download/$pkgname-$pkgver.tar.gz)
depends=('python' 'libvorbis' 'pyogg' 'glibc')
groups=('devel-extra')
archs=('i686')
up2date="lynx -dump http://www.andrewchatham.com/pyogg | grep -A3 Latest | grep -o -E '[0-9].[0-9]' | tail -n1"
source=(http://www.andrewchatham.com/pyogg/download/$pkgname-$pkgver.tar.gz)
sha1sums=('9d530a259486b8ad0e09a307e6657437aed6452c')

build()
{
	Fcd
	./config_unix.py --prefix=$Fdestdir/usr || return 1
	python setup.py install --prefix=$Fdestdir/usr || return 1
}

# optimalization OK
