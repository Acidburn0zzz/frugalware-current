# Last Modified: Wed, 29 Mar 2006 23:08:48 +0200
# Compiling Time: 0 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=sbcl-bin
realname=sbcl
pkgver=0.9.11
pkgrel=1
pkgdesc="Steel Bank Common Lisp (Binary version)"
depends=('glibc')
groups=('devel-extra')
archs=('i686' 'x86_64')
conflicts=('sbcl')
Finclude sourceforge
if [ "$CARCH" == "i686" ]; then
	targetarch="x86"
	sha1sums=('50df2e12440796cde4d4026c2cbd1805f0be5b66')
elif [ "$CARCH" == "x86_64" ]; then
	targetarch="x86-64"
	sha1sums=('900c4e6e6a0e2b6562e45da839c74cb20995377c')
fi
sha1sums=(${sha1sums[@]} '9357b6f2d69801cccfa5070706c16ffc9dc821bc' \
	  'fc5c50ba962a9cd0a84be5a1b0b7995a1b972e69')
source=(http://dl.sourceforge.net/sourceforge/sbcl/sbcl-$pkgver-$targetarch-linux-binary.tar.bz2 \
	sbcl.sh \
	sbcl-fix-missing-doc.patch)
options=('nobuild')

build()
{
	Fcd sbcl-$pkgver-$targetarch-linux
	Fpatchall
	export INSTALL_ROOT=$Fdestdir/usr
	Fmkdir /usr/share/man/man1	
	sh install.sh || return 1
	Fexe /etc/profile.d/sbcl.sh
	Fmv /usr/share/doc/sbcl /usr/share/doc/$pkgname-$pkgver
	Frm /usr/share/doc/$pkgname-$pkgver/html
}
