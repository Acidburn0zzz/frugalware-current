pkgname=scratchbox
pkgver=1.0.4
mainver=1.0
pkgrel=1
pkgdesc="A cross-compilation toolkit to make embedded application development easier."
url="http://www.scratchbox.org/"
depends=('glibc')
groups=('devel-extra')
archs=('i686' '!x86_64')
up2date="lynx -dump http://scratchbox.org/download/files/sbox-releases/\$(lynx -dump http://scratchbox.org/download/files/sbox-releases/?M=D |grep [0-9]/|sed 's|.*]\(.*\)/.*|\1|;q')/tarball/|grep tar.gz$|sed 's/.*-\([^-]*\)-[^-].*$/\1/;q'"
source=(http://scratchbox.org/download/files/sbox-releases/1.0/tarball/scratchbox-core-1.0.4-i386.tar.gz \
	http://scratchbox.org/download/files/sbox-releases/1.0/tarball/scratchbox-devkit-debian-1.0.3-i386.tar.gz \
	http://scratchbox.org/download/files/sbox-releases/1.0/tarball/scratchbox-devkit-doctools-1.0.3-i386.tar.gz \
	http://scratchbox.org/download/files/sbox-releases/1.0/tarball/scratchbox-devkit-perl-1.0.3-i386.tar.gz \
	http://scratchbox.org/download/files/sbox-releases/1.0/tarball/scratchbox-libs-1.0.3-i386.tar.gz \
	http://scratchbox.org/download/files/sbox-releases/1.0/tarball/scratchbox-toolchain-arm-gcc3.4-glibc2.3-1.0.2-i386.tar.gz \
	http://scratchbox.org/download/files/sbox-releases/1.0/tarball/scratchbox-toolchain-host-gcc-1.0.3-i386.tar.gz \
	http://scratchbox.org/download/files/sbox-releases/1.0/tarball/scratchbox-toolchain-i686-gcc3.3-glibc2.3-1.0.3-i386.tar.gz \
	README.Frugalware rc.scratchbox)
options=('nostrip') # why wasting our time with this if it's already done?

build()
{
	Fmkdir /usr/lib
	cp -pPR scratchbox $Fdestdir/usr/lib/
	Fln usr/lib/scratchbox scratchbox
	# no Frcd2 here as no i18n
	Fexe /etc/rc.d/rc.scratchbox
	Fdoc README.Frugalware
}
