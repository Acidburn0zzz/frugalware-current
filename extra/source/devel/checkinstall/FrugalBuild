# Last Modified: Mon, 24 Jan 2005 20:11:22 +0100
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=checkinstall
pkgver=1.5.3
pkgrel=1
pkgdesc="Installs a compiled program from the program's source directory."
url="http://asic-linux.com.mx/~izto/checkinstall/"
depends=('glibc')
up2date=`lynx -dump $url/download.php|grep -1 stable|sed -n 's/.*-\(.*\)\.tgz/\1/;$ p'`
source=($url/files/source/$pkgname-$pkgver.tgz)
md5sums=('744af19b796bedbb79c74e8c08f8792f')

build() {
	cd $startdir/src/$pkgname-$pkgver
	
	make || return 1
	
	mkdir -p $startdir/pkg/usr/{bin,lib/$pkgname,sbin}
	install -m755 checkinstall makepak $startdir/pkg/usr/sbin/
	install -m644 checkinstallrc $startdir/pkg/usr/lib/checkinstall/
	make -C installwatch-0.6.3 PREFIX=$startdir/pkg/usr/ install
}

# vim: ft=sh
