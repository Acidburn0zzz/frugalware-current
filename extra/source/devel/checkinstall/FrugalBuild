# Last Modified: Thu, 11 Aug 2005 16:55:27 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=checkinstall
pkgver=1.6.0
ivver=0.7.0beta4
pkgrel=1
pkgdesc="Installs a compiled program from the program's source directory."
url="http://asic-linux.com.mx/~izto/checkinstall/"
depends=('glibc')
backup=(usr/lib/checkinstall/checkinstallrc)
groups=('devel-extra')
archs=('i686')
up2date="lynx -dump $url/download.php |grep Source|sed 's/.*-\(.*\)\.t.*/\1/'"
source=($url/files/source/$pkgname-$pkgver.tgz)
sha1sums=('b4c8dfa7bd638c81f2e7e3d3d6cf4b7be9bd266a')

build()
{
	Fmake
	Fmkdir /usr/{bin,lib/$pkgname,sbin}
	Fexerel checkinstall makepak /usr/sbin/
	Ffilerel checkinstallrc-dist /usr/lib/checkinstall/checkinstallrc
	make -C installwatch-$ivver PREFIX=$Fdestdir/usr/ install
}

# vim: ft=sh
