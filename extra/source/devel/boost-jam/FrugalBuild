# Last Modified: Mon, 06 Mar 2006 14:41:17 +0100
# Compiling Time: 0.06 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=boost-jam
pkgver=3.1.12
pkgrel=1
pkgdesc="Boost.Jam - an alternative to make based on Jam."
url="http://www.boost.org/tools/build/jam_src/index.html"
depends=('glibc')
groups=('devel-extra')
archs=('x86_64' 'i686')
conflicts=('jam')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=7586' |grep boost-jam-[0-9\.]*.tgz |sed -ne 's/.*-\(.*\).tgz.*/\1/;1 p'"
source=(http://heanet.dl.sourceforge.net/boost/$pkgname-$pkgver.tgz boost-jam-misc.patch)
sha1sums=('a36935eeed5264cdd520a5c70180e1fd75cdd16c' \
	  'e47680c0c6878a151872d969e9aac103068c257f')

build() {
	Fcd
	Fpatchall
	LOCATE_TARGET=bin ./build.sh cc
	Fmkdir /usr/bin/
	Fexe $pkgname-$pkgver/bin/* usr/bin/
	Frm usr/bin/yyacc
}

# vim: ft=sh

# optimalization OK
