# Last Modified: Sat, 23 Jul 2005 16:32:15 +0200
# Compiling Time: ~0.03 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=boost-jam
pkgver=3.1.10
pkgrel=2
pkgdesc="Boost.Jam - an alternative to make based on Jam."
url="http://www.boost.org/tools/build/jam_src/index.html"
depends=('glibc')
groups=('devel-extra')
archs=('x86_64' 'i686')
conflicts=('jam')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=7586' |grep boost-jam-[0-9\.]*.tgz|sed -ne 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://heanet.dl.sourceforge.net/boost/$pkgname-$pkgver.tgz boost-jam-misc.patch)
md5sums=('8fd247425bbd12bb38114fbd8425696c' '090a72bd5aeaef655189d872118e70f4')

build() {
	Fcd
	Fpatchall
	LOCATE_TARGET=bin ./build.sh cc
	Fexe $pkgname-$pkgver/bin/* usr/bin/
	Frm usr/bin/yyacc
}

# vim: ft=sh

# optimalization OK
