# Last Modified: Wed, 27 Jul 2005 12:20:42 +0200
# Compiling Time: ~0.03 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=boost-jam
pkgver=3.1.11
pkgrel=1
pkgdesc="Boost.Jam - an alternative to make based on Jam."
url="http://www.boost.org/tools/build/jam_src/index.html"
depends=('glibc')
groups=('devel-extra')
archs=('x86_64' 'i686')
conflicts=('jam')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=7586' |grep boost-jam-[0-9\.]*.tgz |sed -ne 's/.*-\(.*\).tgz.*/\1/;1 p'"
source=(http://heanet.dl.sourceforge.net/boost/$pkgname-$pkgver.tgz boost-jam-misc.patch)
md5sums=('b86fb56a824d4a3dedcbda12f8b1a2b3' '090a72bd5aeaef655189d872118e70f4')

build() {
	Fcd
	Fpatchall
	LOCATE_TARGET=bin ./build.sh cc
	Fmkdir /usr/bin/
	Fexe $pkgname-$pkgver/bin/* usr/bin/
	Frm usr/bin/yyacc
}

# vim: ft=sh

# optimalization OK
