pkgname=perl-yaml
modname=Yaml
modauthor=I/IN/INGY
pkgver=0.58
pkgrel=1
pkgdesc="YAML Ain't Markup Language (tm)"
depends=('perl')
groups=('devel-extra')
Finclude perl
archs=('i686' 'x86_64')
source=(http://search.cpan.org/CPAN/authors/id/I/IN/INGY/YAML-$pkgver.tar.gz)
sha1sums=('af6fbd73f859f50dae60d9dfbd16fcd7e68e7831')

build()
{
	Fcd YAML-$pkgver
	Fbuild
	Frm /usr/lib/perl5/current
}
