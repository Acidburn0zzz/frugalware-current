pkgname=rake
pkgver=0.6.2
pkgrel=2
pkgdesc="Make-like scripting in Ruby"
url="http://rake.rubyforge.org/"
groups=('devel-extra')
archs=('i686')

Finclude gem
sha1sums=('bd43729421582fac98d11c89ac4ab706fa9332d9')

build() {
	Finstallgem
	sed -i -e "s|^\(begin\)$|#!/usr/bin/env ruby\n\n\1|" "$Fdestdir"/usr/bin/rake
}

# optimalization OK

