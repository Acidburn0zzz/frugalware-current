pkgname=rake
pkgver=0.7.0
pkgrel=1
pkgdesc="Make-like scripting in Ruby"
url="http://rake.rubyforge.org/"
groups=('devel-extra')
archs=('i686')

Finclude gem
sha1sums=('41d464b289a6bf16d5473daebdbad291d441c6af')

build() {
	Finstallgem
	sed -i -e "s|^\(begin\)$|#!/usr/bin/env ruby\n\n\1|" "$Fdestdir"/usr/bin/rake
}

# optimalization OK

