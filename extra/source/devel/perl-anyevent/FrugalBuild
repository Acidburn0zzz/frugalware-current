pkgname=perl-anyevent
pkgver=1.02
pkgrel=1
pkgdesc="provide framework for multiple event loops"
url="http://search.cpan.org/search?query=AnyEvent&mode=all"
depends=('perl' 'perl-event' 'tk')
groups=('devel-extra')
archs=('i686')
up2date="lynx -dump http://mirror.gnowledge.org/cpan/authors/id/M/ML/MLEHMANN/ | grep AnyEvent | Flasttar"
source=(http://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/AnyEvent-1.02.tar.gz)
sha1sums=('3f60a4c0bbecb2c4bfb92c10c51874b8814568ea')

build() {
        cd $Fsrcdir/AnyEvent-$pkgver
        Fconf
        make test
        make || return 1
        Fmakeinstall
}
