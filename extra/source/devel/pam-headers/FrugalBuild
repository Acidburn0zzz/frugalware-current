# Last modified: Sun, 30 Oct 2005 18:47:36 +0100
# Compiling time: ~1 second
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=pam-headers
pkgver=0.76
pkgrel=2
pkgdesc="PAM headers"
depends=('glibc')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date=$pkgver
source=(http://www.linuxfromscratch.org/~tushar/hints/files/OpenOfficeFromScratch/Linux-PAM-$pkgver-headers.tar.bz2)
sha1sums=('5344ebef94dae827b1e2e26e42d34c5e77dc7f90')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/usr/include
	mv security $startdir/pkg/usr/include
	chmod 644 $startdir/pkg/usr/include/security/*
}

# vim: ft=sh
