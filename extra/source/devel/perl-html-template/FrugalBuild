pkgname=perl-html-template
pkgver=2.8
pkgrel=1
pkgdesc="Perl module to use HTML Templates from CGI scripts"
url="http://cpan.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/~samtregar/' |grep 'HTML-Template-' |sed 's/.*late-\(.*\) P.*/\1/;1 q'"
source=(http://search.cpan.org/CPAN/authors/id/S/SA/SAMTREGAR/HTML-Template-$pkgver.tar.gz)

build() {
	cd $startdir/src/HTML-Template-$pkgver
	perl Makefile.PL
	
	make test
	make || return 1
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

sha1sums=('b0e319634a1538c0915f4deaa7a42c2f5365362f')
