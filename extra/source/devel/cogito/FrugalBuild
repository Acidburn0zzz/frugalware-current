# Last Modified: Mon, 06 Jun 2005 11:40:48 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=cogito
pkgver=0.11.1
pkgrel=1
pkgdesc="An SCM-like GIT layer"
url="http://www.kernel.org/pub/software/scm/cogito"
depends=('curl')
groups=('devel-extra')
archs=('i686')
conflicts=('git')
up2date="lynx -dump \"$url/?C=M;O=D\"|grep bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.bz2)
md5sums=('14a8e24b776675ca39cb2ae23bf4e077')

build()
{
	Fsed '-O2' "$CFLAGS" Makefile
	Fmake || return 1
	Fmakeinstall prefix=/usr
}

# optimalization ok

