pkgname=pyserial
pkgver=2.1
pkgrel=1
pkgdesc="This module encapsulates the access for the serial port."
url="http://pyserial.sourceforge.net/"
license="Python License"
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=46487&package_id=39324' | grep -m 1 -o '\([0-9]\.\)\+zip' | sed 's|.zip||'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.zip)
md5sums=('b2e11ffa387801f5f24b4aea0fa7d742')
groups=('devel-extra')
archs=('i686' 'x86_64')
depends=('python')

build()
{
	Fbuild
	Fmkdir /usr/share/doc/$pkgname-$pkgver/examples
	Fdocrel CHANGES.txt LICENSE.txt
	Fexerel examples/*.py /usr/share/doc/$pkgname-$pkgver/examples/
	Ffilerel examples/*.wxg /usr/share/doc/$pkgname-$pkgver/examples/
}

# optimalization OK - noarch

