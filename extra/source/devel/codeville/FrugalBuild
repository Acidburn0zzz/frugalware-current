# Last Modified: Fri, 06 Jan 2006 23:34:44 +0100
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=codeville
pkgver=0.1.14
pkgrel=1
pkgdesc="A distributed version control system."
url="http://codeville.org/"
depends=('python')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download.php|grep gz$|sed 's/.*-\(.*\)\.t.*/\1/'"
source=($url/download/Codeville-$pkgver.tar.gz)
sha1sums=('174a4bccdd5ce18eea38caf62062c7e35030dc75')

build()
{
	Fcd Codeville-$pkgver
	Fbuild
}

# vim: ft=sh
