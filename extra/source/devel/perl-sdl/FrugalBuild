pkgname=perl-sdl
pkgver=1.19.2
pkgrel=1
pkgdesc="Simple DirectMedia Layer Perl"
url="http://cpan.org/"
makedepends=('perl')
depends=('sdl_mixer' 'sdl_net' 'sdlimage' 'perl')
groups=('devel-extra')
archs=('i686')
up2date="pud -p http://search.cpan.org/~dgoehrig/ -e 'perl-(1.*?)\s'"
source=(http://search.cpan.org/CPAN/authors/id/D/DG/DGOEHRIG/SDL_perl-$pkgver.tar.gz)
md5sums=('f4d532623cb3feddf7e54aece1de53e6')

build() {
	cd $startdir/src/SDL_perl-$pkgver
	perl Makefile.PL
	
	make test
	make || return 1
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

