pkgname=pyrtf
realname=PyRTF
pkgver=0.45
pkgrel=1
pkgdesc="Library for reading and writing RTF files in Python"
url="http://pyrtf.sourceforge.net"
depends=('python')
groups=('devel-extra')
archs=('i686' 'x86_64')
source=(http://dl.sourceforge.net/sourceforge/pyrtf/$realname-$pkgver.tar.gz)
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=115205 | grep Latest |sed 's/ //g'|sed 's/Latest....//g'|sed 's/Re.*//g'|sed 's/hd.*//g'|sed 's/.....N.*//g'|sed -e '/^$/d'"
sha1sums=('dd7fb3fb4e937999d6216d5ceefbe66ec22d679a')

build() {
	Fcd $realname-$pkgver
	Fmake
	Fmakeinstall
}

