# Last Modified: Fri, 05 Aug 2005 02:26:16 +0200
# Compiling Time: ~1 hour on factory.frugalware.org
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=wxpython
pkgver=2.6.1.0
pkgrel=1
pkgdesc="wxPython GUI toolkit"
url="http://www.wxpython.org/"
depends=('wxgtk' 'python')
groups=('devel-extra')
archs=('x86_64')
#up2date="lynx -dump $url/downld2.htm|grep stable|sed -n 's/ *\([0-9\.]*\).*/\1/; 1 p'"
source=(http://heanet.dl.sourceforge.net/wxpython/wxPython-src-$pkgver.tar.gz)
sha1sums=('e7f46b0eb83fb0e316e0d5b49fd38b3b7f00b95b')

build()
{
	Fcd wxPython-src-$pkgver/wxPython
	Fmake BUILD_GLCANVAS=0 BUILD_STC=0 BUILD_GIZMOS=0 BUILD_ANIMATE=0
	Fmakeinstall BUILD_GLCANVAS=0 BUILD_STC=0 BUILD_GIZMOS=0 BUILD_ANIMATE=0
}

# optimalization ok

