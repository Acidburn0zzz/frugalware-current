# Last Modified: Mon, 01 Aug 2005 20:08:22 +0200
# Compiling Time: ~1 minute
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=rubygems
pkgver=0.8.11
pkgrel=1
pkgdesc="RubyGems is the Ruby standard for publishing and managing third party libraries."
url="http://docs.rubygems.org/"
depends=('ruby')
groups=('devel-extra')
archs=('i686' 'x86_64')
source=(http://rubyforge.org/frs/download.php/3700/rubygems-$pkgver.tgz)
up2date='lynx -dump "http://rubyforge.org/frs/?group_id=126" | grep "rubygems.*.tgz" | head -n 1 | sed "s/.*rubygems-\(.*\).tgz.*/\1/"'
sha1sums=('9fb1f44ad07f94d81ce90ad10f8695658fc13543')

build() {
	Fcd $pkgname-0.8.10 # wtf?
	Fmkdir /usr/lib/ruby/gems/1.8
	Fsed 'Gem.dir' '"../../../../pkg" + Gem.dir' post-install.rb
	ruby setup.rb all --prefix="$Fdestdir"/usr || Fdie
}

# vim: ft=sh
