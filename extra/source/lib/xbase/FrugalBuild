pkgname=xbase
pkgver=2.0.0
pkgrel=1
pkgdesc="Collection for manipulating Xbase type datafiles and indices"
url="http://linux.techass.com/projects/xdb/"
license="LGPL2.1"
up2date="lynx -dump $url | grep 'latest stable' | cut -d ' ' -f 8"
source=(http://dl.sourceforge.net/sourceforge/xdb/$pkgname-$pkgver.tar.gz)
md5sums=('9b29362031716a12491beb9f8cc882f2')
groups=('lib-extra')
archs=('i686' 'x86_64')
depends=('gcc' 'libstdc++')

build() {
	Fcd
	Facu
	Fmake
	Fmakeinstall
}

