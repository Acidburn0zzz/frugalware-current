pkgname=cal3d
pkgver=0.10.0
pkgrel=1
pkgdesc="3D character animation library"
url="https://gna.org/projects/cal3d/"
depends=('glibc')
groups=('lib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext=.tar.bz2
Finclude sourceforge
source=(http://heanet.dl.sourceforge.net/sourceforge/cal3d/cal3d-full-0.10.0.tar.bz2 \
	$pkgname-$pkgver-libtool-compat.patch0)
sha1sums=('3f86dd1f21b83eabfc54977b1f63a2d37962e45a' \
          '1025156e54c89a8ed751d534e42a31a3304b7c61')

build()
{
	Fcd
	Fpatchall
	./autogen.sh
	Fmake
	Fmakeinstall
}

