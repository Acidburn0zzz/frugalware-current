# Last Modified: Sun, 13 Nov 2005 17:20:13 +0100
# Compiling Time: 0.99 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=hk_classes-mysql
pkgver=0.8
pkgrel=1
pkgdesc="MySQL driver for hk_classes"
url="http://hk-classes.sourceforge.net/"
license="LGPL2"
groups=('lib-extra')
archs=('i686')
depends=('hk_classes-base' 'mysql')
provides=('hk_classes-driver')
Finclude hk_classes

build()
{
	Fcd $realname-$pkgver
	Fbuild --without-firebird \
	       --with-mysql \
	       --without-postgres \
	       --without-odbc \
	       --without-sqlite \
	       --without-sqlite3 \
	       --without-mdb \
	       --without-xbase \
	       --without-paradox
	Frm /usr/{bin,include,man} /usr/lib/python* /usr/lib/hk_classes/libhk_classes.*
}

# vim: ft=sh

# optimalization OK
