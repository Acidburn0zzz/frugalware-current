pkgname=libdvdplay
pkgver=1.0.1
pkgrel=1
pkgdesc="a portable abstraction library for DVD menus support"
url="http://developers.videolan.org/libdvdplay"
license="GPL"
depends=('glibc' 'libdvdread')
archs=('i686')
groups=('lib-extra')
up2date="lynx -dump 'http://download.videolan.org/pub/libdvdplay/?C=N;O=D' | grep 'DIR.*/' | sed -n 's|.*\]\([0-9\.]\+\)/.*|\1|;1 p'"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('a4bf7a8173fbecc9de34c51e302771929252fc98')

build()
{
	Fbuild
}

