# Last Modified: Sat, 11 Feb 2006 18:20:42 +0100
# Compiling Time: 0.03 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=fxusb
pkgver=3.11_06
realver=`echo $pkgver | tr _ -`
pkgrel=3
pkgdesc="Linux driver for the AVM Fritz!X USB V.3 ISDN system"
url="http://www.avm.de"
pkgurl="ftp://ftp.avm.de/cardware/fritzxusb.v30/linux/"
up2date="lynx -dump $pkgurl/\$(lynx -dump $pkgurl |sed -n 's|.*/\(.*\)|\1|;$ p')|grep gz$|sed -n 's/.*-\([^-]*\)-\([^-]*\)\.t.*/\1_\2/;$ p'"
source=(ftp://ftp.avm.de/cardware/fritzxusb.v30/linux/suse.93/$pkgname-suse93-$realver.tar.gz)
sha1sums=('b8656910a73321e211dcadaa5e97e13dbd80bb21')
groups=('lib-extra')
archs=('i686')
Finclude kernel-module
install=$pkgname.install
depends=('kernel=2.6.15-2')
nobuild=1

build()
{
	Fcheckkernel
	Fcd fritz
	Fsed '$(KDIR)' '$(DESTDIR)&' Makefile
	Fsed '$(LIBDIR)' '$(DESTDIR)&' src/Makefile
	Fmakeinstall
}

