pkgname=geoip
pkgver=1.3.14
pkgrel=1
pkgdesc="Easily lookup countries by IP addresses, even when Reverse DNS entries don't exist."
url="http://www.maxmind.com/app/c"
depends=('zlib')
backup=(etc/GeoIP.conf)
groups=('lib-extra')
archs=('i686')
up2date="lynx -dump http://www.maxmind.com/download/geoip/api/c/?M=D|grep tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;2 p'"
source=(http://www.maxmind.com/download/geoip/api/c/GeoIP-$pkgver.tar.gz)
sha1sums=('dfba645d525c681c92df1bea715e70cac6045b2e')

build()
{
	Fcd GeoIP-$pkgver
	Fmake
	make DESTDIR=$Fdestdir install
}

