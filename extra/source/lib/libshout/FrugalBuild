pkgname=libshout
pkgver=2.1
pkgrel=1
pkgdesc="Library which can be used to write a source client like ices."
url="http://www.icecast.org/"
groups=('lib-extra')
archs=('i686')
depends=('libvorbis')
up2date="lynx -dump http://www.icecast.org/download.php | grep libshout-[0-9\.]*tar.gz | sed -ne 's/.*-//;s/.tar.gz//;1 p'"
source=(http://downloads.us.xiph.org/releases/libshout/$pkgname-$pkgver.tar.gz)
sha1sums=('c251d0791d807762957235442fa9b777f3f6068c')

build()
{
	Fbuild
	Frm usr/bin/
	Fmv usr/share/doc/$pkgname usr/share/doc/$pkgname-$pkgver
}
# vim: ft=sh
# optimalization
