pkgname=ode
pkgver=0.5
pkgrel=1
pkgdesc="ODE is an open source, high performance library for simulating rigid body dynamics"
url="http://ode.org/"
depends=('glibc' 'xorg-server')
groups=('lib-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=24884 | grep -m1 ODE | sed 's/.*n \(.*\) M.*/\1/'"
source=(http://heanet.dl.sourceforge.net/opende/$pkgname-$pkgver.tgz)
sha1sums=('f13756f1192d24101b6d1a3c14feb43efbf0b281')

build()
{
	Fcd
	# Enable tri-meshes
	Fsed "#OPCODE_DIRECTORY=OPCODE" "OPCODE_DIRECTORY=OPCODE" config/user-settings
  	Fconf
  	Fmake ode-lib
  	Fmkdir usr
  	mv {include,lib} $Fdestdir/usr
}

# optimalization OK

# optimization OK
