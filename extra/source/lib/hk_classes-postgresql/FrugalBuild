# Last Modified: Sun, 13 Nov 2005 18:11:54 +0100
# Compiling Time: 0.96 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=hk_classes-postgresql
realname=hk_classes
pkgver=0.8
pkgrel=1
pkgdesc="PostgreSQL driver for hk_classes"
url="http://hk-classes.sourceforge.net/"
license="LGPL2"
groups=('lib-extra')
archs=('i686')
depends=('hk_classes-base' 'postgresql')
provides=('hk_classes-driver')
Finclude hk_classes

build()
{
	Fcd $realname-$pkgver
	Fbuild --without-firebird \
	       --without-mysql \
	       --with-postgres \
	       --without-odbc \
	       --without-sqlite \
	       --without-sqlite3 \
	       --without-mdb \
	       --without-xbase \
	       --without-paradox
	Frm /usr/{bin,include,man} /usr/lib/python* /usr/lib/hk_classes/libhk_classes.*
}

# vim: ft=sh

# optimalization OK
