diff -Naur libmpeg3-1.5.4.orig/strip_fPIC.sh libmpeg3-1.5.4/strip_fPIC.sh
--- libmpeg3-1.5.4.orig/strip_fPIC.sh	1970-01-01 01:00:00.000000000 +0100
+++ libmpeg3-1.5.4/strip_fPIC.sh	2005-07-07 17:29:35.000000000 +0200
@@ -0,0 +1,17 @@
+#!/bin/sh
+#
+# taken from flac sources  --qboosh
+#
+# libtool assumes that the compiler can handle the -fPIC flag
+# This isn't always true (for example, nasm can't handle it)
+command=""
+while [ $1 ]; do
+	if [ "$1" != "-fPIC" ]; then
+		if [ "$1" != "-DPIC" ]; then
+			command="$command $1"
+		fi
+	fi
+	shift
+done
+echo $command
+exec $command
