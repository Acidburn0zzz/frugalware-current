# Last Modified: Mon, 09 May 2005 12:38:26 +0200
# Compiling Time: ~3 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=freetype2-bi
pkgver=2.1.9
pkgrel=1
pkgdesc="TrueType font rendering library - 2.0 series (with bytecode interpreter)"
url="http://freetype.sourceforge.net"
depends=('glibc' 'zlib')
groups=('lib-extra')
conflicts=('freetype2')
provides=('freetype2')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=3157'|grep -3 freetype2 |sed -n '7 p'|tr -s ' '|cut -d ' ' -f 5|sed 's/.tar.gz//'|cut -d - -f 2"
source=(ftp://ftp.freetype.org/freetype/freetype2/freetype-$pkgver.tar.bz2 bytecode.patch freetype-2.1.9-fix_bci.patch)
md5sums=('ec1b903e4be5f073caa72458ea58c29c' '99ef2d11ed112baf218605a96c791858'\
         'abe92b0754b95609e7cce9bf52238397')

build() {
	cd $startdir/src/freetype-$pkgver
	patch -p1 < ../bytecode.patch
	patch -p1 < ../freetype-2.1.9-fix_bci.patch
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
