# Last modified: Sat, 15 Oct 2005 16:33:07 +0200
# Compiling time: 0.60 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=fftw
pkgver=3.0.1
pkgrel=1
pkgdesc="C subroutine library for computing the Discrete Fourier Transform (DFT)"
url="http://www.fftw.org/"
license="GPL-2"
depends=('glibc')
archs=('i686')
groups=('lib-extra')
up2date="lynx -dump $url/download.html |grep $pkgname-[0-9\.]*\.tar.gz |sed -n 's/.*-\(.*\)\.t.*./\1/;1 p'"
source=(http://www.fftw.org/$pkgname-$pkgver.tar.gz)
sha1sums=('e392a005dd93583f47de29ec4992687aa21bf3a2')

build() {
	Fbuild --enable-k7 --enable-sse --enable-single \
		--enable-shared --enable-threads \
		--enable-float --with-gnu-ld
	Fln fftw3.h /usr/include/fftw.h
	Fln fftw3.f /usr/include/fftw.f
}
# optimalization ok

# vim: ft=sh
