# Last Modified: Fri, 29 Jul 2005 17:51:33 +0200
# Compiling Time: ~1 minute
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=mpeg2dec
pkgver=0.4.0b
pkgrel=2
pkgdesc="libmpeg2 is a free library for decoding mpeg-2 and mpeg-1 video streams."
url="http://libmpeg2.sourceforge.net/"
depends=('sdl')
groups=('lib-extra')
archs=('x86_64')
up2date="lynx -dump http://libmpeg2.sf.net/files/ |grep mpeg2dec-[0-9a-z\.]*.tar.gz| grep -v snapshot | tail -n 1|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://libmpeg2.sourceforge.net/files/$pkgname-$pkgver.tar.gz \
	libmpeg2-cpuid-detectionfix-x86_64.patch)
md5sums=('52d10ea80595ec83d8557ba7ac6dc8e6' '71365d32bebc96d5e8fd7fd109eaa54a')
license="GPL2"

build () {
	Fcd $pkgname-0.4.0
	[ "$CARCH" == "x86_64" ] && Fpatchall && CFLAGS="$CFLAGS -fPIC"
	Fmake --enable-shared
	Fmakeinstall
}

# vim: ft=sh

# optimalization OK
