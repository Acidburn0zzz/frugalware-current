pkgname=ipod-sharp
pkgver=0.5.15
pkgrel=1
pkgdesc="ipod-sharp provies support for high level features of Apple's iPod"
url="http://banshee-project.org/Subprojects/Ipod-sharp"
depends=('mono' 'libipoddevice' 'gtk-sharp')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep -m1 'ipod-sharp-'|sed 's/.*-\(.*\) .*/\1/'"
source=(http://banshee-project.org/files/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('7bd37812edb2ead257ec603b4d6e22aca9715821')

build() {
	export MONO_SHARED_DIR=$startdir/pkg/weird
	mkdir -p $MONO_SHARED_DIR
	
	Fcd
	./configure --prefix=/usr --disable-docs
	make
	make DESTDIR=$Fdestdir install
	
	rm -rf $MONO_SHARED_DIR
}

# optimalization OK
