# Last Modified: Mon, 05 Sep 2005 17:25:09 +0200
# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=chmlib
pkgver=0.35
pkgrel=1
pkgdesc="A library for dealing with Microsoft ITSS/CHM format files."
url="http://66.93.236.84/%7Ejedwin/projects/chmlib/"
#depends=('')
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep Download|sed -n 's/.* \(.*\):/\1/;1 p'"
source=($url/$pkgname-$pkgver.tgz chmlib-0.35-fix-int.patch)
sha1sums=('a80137fcfb6cf3aa92d0a49e921e374cc6791e92' \
	  '7dacc21c1f08fc2fbaf0ef85cf221cf318c9e7eb')

build()
{
	Fpatchall $pkgname-$pkgver-fix-int.patch
	Fmkdir /usr/{include,lib}
	Fmake
	make INSTALLPREFIX=$Fdestdir/usr install
}

# vim: ft=sh

# optimalization OK
