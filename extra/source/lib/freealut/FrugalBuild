# Last Modified: Fri, 09 Jun 2006 15:21:34 +0530
# Compiling Time: 0.19 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=freealut
pkgver=1.1.0
pkgrel=1
pkgdesc="OpenAL Utility Toolkit"
url="http://www.openal.org"
depends=('openal')
makedepends=('hd2u')
groups=('lib-extra')
archs=('i686')
up2date="lynx -dump http://www.openal.org/openal_webstf/downloads/ | grep freealut | Flasttar"
source=(http://www.openal.org/openal_webstf/downloads/$pkgname-$pkgver-src.zip)
sha1sums=('4cc71e5a0d6c8a738089c9ebd1ef4efb24e42a20')

build() {
	Fcd $pkgname-$pkgver-src
	dos2unix autogen.sh || return 1
	sh autogen.sh || return 1
	Fbuild --libdir=/usr/lib
}

# optimization OK
