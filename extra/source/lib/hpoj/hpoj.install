post_install()
{
	chkconfig --add rc.ptal
	sed -i 's|#hpoj|hpoj|' /etc/sane.d/dll.conf
	echo 'Please run as root "ptal-init setup" to setup your HP OJ device.'
}

post_upgrade()
{
	pre_remove
	post_install
}

pre_remove()
{
	chkconfig --del rc.ptal
	sed -i 's|hpoj|#hpoj|' /etc/sane.d/dll.conf
}

op=$1
shift

$op $*

