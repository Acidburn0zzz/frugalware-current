pkgname=hk_classes-base
pkgver=0.8
pkgrel=1
pkgdesc="Set of GUI C++ libraries which allow the development of database applications."
url="http://hk-classes.sourceforge.net/"
license="LGPL2"
groups=('lib-extra')
archs=('i686')
depends=('python' 'libstdc++' 'hk_classes-driver')
Finclude hk_classes

build()
{
	Fcd $realname-$pkgver
	Fbuild --without-firebird \
	       --without-mysql \
	       --without-postgres \
	       --without-odbc \
	       --without-sqlite \
	       --without-sqlite3 \
	       --without-mdb \
	       --without-xbase \
	       --without-paradox
}

# vim: ft=sh

# optimalization OK
