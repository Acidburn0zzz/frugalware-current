pkgname=hk_classes-base
realname=hk_classes
pkgver=0.7.4a
pkgrel=1
pkgdesc="Set of GUI C++ libraries which allow the development of database applications."
url="http://hk-classes.sourceforge.net/"
license="LGPL2"
up2date="lynx -dump http://hk-classes.sourceforge.net/download.html | grep 'stable.*hk_classes' | cut -d - -f 2"
source=(http://dl.sourceforge.net/sourceforge/hk-classes/$realname-$pkgver.tar.bz2)
md5sums=('7b4de2d97c05d4a59d54cfab602fc062')
groups=('lib-extra')
archs=('i686')
depends=('python' 'gcc' 'libstdc++' 'hk_classes-driver')

build()
{
	Fcd $realname-$pkgver
	Fbuild --without-firebird \
	       --without-mysql \
	       --without-postgres \
	       --without-odbc \
	       --without-sqlite \
	       --without-sqlite3 \
	       --without-mdb \
	       --without-xbase \
	       --without-paradox
}

