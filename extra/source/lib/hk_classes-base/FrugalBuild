pkgname=hk_classes-base
pkgver=0.8
pkgrel=1
pkgdesc="Set of GUI C++ libraries which allow the development of database applications."
url="http://hk-classes.sourceforge.net/"
license="LGPL2"
groups=('lib-extra')
archs=('i686' 'x86_64')
depends=('python' 'libstdc++' 'hk_classes-driver')
Finclude hk_classes

## quick HOWTO for other archs()
## 1.) cd /frugalware-current/extra/source/lib/
## 2.) now cp -R hk_classes-base hk_classes-base-$arch or something like that
## 3.) cd hk_classes-base-$arch , remove the hk_classes-driver depend() and build the pkg
## 4.) now you have to install the new *.fpm manually in chroot eg :
##     sudo pacman -U hk_classes-base-$pkgver-$arch.fpm -r /your_chroot ( this each time you build a driver )
## 5.) now compile and upload all the hk_*classes* ( sure add your $arch to archs() first :S )
## 6.) rm -rf hk_classes-base-$arch && sudo makepkg  -RC &&  hk_classes-base
## 7.) add your $arch compile with -d ( huch ? ) and uploade it. That is

build()
{
	Fcd $realname-$pkgver
	Fbuild --without-firebird \
	       --without-mysql \
	       --without-postgres \
	       --without-odbc \
	       --without-sqlite \
	       --without-sqlite3 \
	       --without-mdb \
	       --without-xbase \
	       --without-paradox
}

# vim: ft=sh

# optimalization OK
