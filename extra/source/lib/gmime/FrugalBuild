pkgname=gmime
pkgver=2.1.19
pkgrel=2
pkgdesc="Provides a core library and set of utilities for the creation and parsing of messages using MIME"
url="http://spruce.sourceforge.net/gmime/"
depends=('glib2' 'sharutils' 'zlib')
makedepends=('gtk-sharp')
groups=('lib-extra')
archs=('i686' 'x86_64')
# this up2date doesn't return the latest ver, thanks the the gmime dev's stupidity
#up2date="lynx -dump http://spruce.sourceforge.net/gmime/sources/|grep 'DEVEL.*[0-9\.]$'|sed 's/.*_//'"
source=(http://spruce.sourceforge.net/gmime/sources/v2.1/$pkgname-$pkgver.tar.gz)
sha1sums=('7f39dbee03880a7b13fe77d849bdc27f1ca2d1ce')

build() {
	export MONO_SHARED_DIR=$startdir/pkg/weird
	mkdir -p $MONO_SHARED_DIR
	
	Fmake
	Fmakeinstall
	
	# These are provided by sharutils
	rm -f ${startdir}/pkg/usr/bin/uu??code
	
	rm -rf $MONO_SHARED_DIR
}

