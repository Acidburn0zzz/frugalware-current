# Last Modified: Sat, 15 Apr 2006 20:50:47 +0200
# Compiling Time: 0.01 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=denyhosts
pkgver=2.4
pkgrel=1
pkgdesc="DenyHosts is a utility to help sys admins thwart ssh hackers"
url="http://denyhosts.sourceforge.net/"
license="GPL2"
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=131204'|grep -o -m 1 'DenyHosts-[0-9\.]\+'|sed 's/DenyHosts-//'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/DenyHosts-$pkgver.tar.gz \
        rc.$pkgname $pkgname.cfg)
sha1sums=('366ef18d3e910b8a2786ab7857255af9bc4f5b05' \
          '8ee54ec73a97016f47c9b1f6c8a9e7c64965b843' \
          'a8d7e5762e6b5c6d9f70243e98bc96cec760b1b3')
groups=('network-extra')
archs=('i686' 'x86_64')
depends=('python')
backup=(etc/denyhosts.cfg)

build()
{
	Fcd DenyHosts-$pkgver
	Fbuild
	Fmkdir /etc /usr/share/{denyhosts/data,doc/$pkgname-$pkgver}
	Fln denyhosts.py /usr/bin/denyhosts
	Fmv /usr/share/denyhosts/*.txt /usr/share/doc/$pkgname-$pkgver/
	Fmv /usr/share/denyhosts/plugins/README.contrib /usr/share/doc/$pkgname-$pkgver/
	Frm /usr/share/denyhosts/{daemon-control-dist,setup.py}
	Ffile /etc/$pkgname.cfg
	Frcd2
}

# optimalization OK - noarch

