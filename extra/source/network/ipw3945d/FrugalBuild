pkgname=ipw3945d
pkgver=1.7.18
pkgrel=1
pkgdesc="Intel PRO/Wireless 3945ABG Network Connection Regulatory Daemon"
url="http://www.bughost.org/ipw3945/"
depends=('glibc')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep ipw3945d-|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=($url/daemon/ipw3945d-$pkgver.tgz)
sha1sums=('838418cffa6706a214d16e43ab3595e193fbbe6a')

build()
{
	Fcd
	if [ "$CARCH" == "i686" ]; then
		cd x86
	elif [ "$CARCH" == "x86_64" ]; then
		cd x86_64
	else
		return 1
	fi
	Ffilerel /sbin/ipw3945d
}
