pkgname=links
pkgver=2.1pre18
pkgrel=1
pkgdesc="A web browser running in both graphics and text mode."
url="http://atrey.karlin.mff.cuni.cz/~clock/twibright/links/"
depends=('libpng' 'libjpeg' 'libtiff' 'openssl' 'gpm' 'ncurses')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download.html|grep Current|sed 's/.* \(.*\)\..*/\1/'"
source=(http://atrey.karlin.mff.cuni.cz/~clock/twibright/$pkgname/download/$pkgname-$pkgver.tar.bz2)
sha1sums=('118a1b59e084b027318adc895aa69fa778c45f86')

build()
{
	Fbuild --enable-javascript --enable-graphics --without-x
}

