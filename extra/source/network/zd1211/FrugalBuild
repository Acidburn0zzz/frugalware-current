# Last modified: Fri, 12 May 2006 21:41:10 +0200
# Compiling time: 0.08 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=zd1211
pkgver=r76
pkgrel=1
pkgdesc="ZyDAS ZD1211 802.11b/g USB WLAN chipset Linux drivers"
url="http://zd1211.ath.cx"
license="GPL"
Finclude kernel-module
archs=('i686')
groups=('network-extra')
up2date="lynx -dump $url/download/ | grep $pkgname-driver-r[0-9\.]*\.tgz | sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://zd1211.ath.cx/download/$pkgname-driver-$pkgver.tgz)
sha1sums=('9edb934a27a5fcad3690b3580b4093592772a436')

build() {
	Fcheckkernel
	Fcd $pkgname-driver-$pkgver
	make || return 1
	Ffilerel lib/modules/`uname -r`/net/zd1211.ko
	# second round ;)
	Fsed "ZD1211REV_B=0" "ZD1211REV_B=1" Makefile
	make || return 1
	Ffilerel lib/modules/`uname -r`/net/zd1211b.ko
	Fdocrel copying
	Fdocrel sta
}
