# Compiling time: 0 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=sugarcrm
origname=SugarSuite
pkgver=4.0.1c
pkgrel=1
pkgdesc="Opensourced CRM application."
url="http://www.sugarforge.org"
license="MPL-1.1"
depends=('apache' 'php' 'mysql')
archs=('i686')
groups=('network-extra')
up2date="lynx -dump $url/content/downloads/ | grep 'SugarSuite.*\.zip' | sort | sed -n 's/.*-\([0-9\.a-z]\+\)\.zip.*/\1/;1p'"
source=(http://www.sugarforge.org/frs/download.php/919/$origname-$pkgver.zip README.Frugalware)
sha1sums=('3cfab939974af296acda1eb9ba6736fe33622325' \
	  'a185a0383308d5ad2a990b84fdae1b88557af6b2')

build() {
	Fcd $origname-Full-4.0.1
	Fmkdir /var/www/$origname
        Fcpr $origname-Full-4.0.1/* var/www/$origname
	Fdirschmod var/www/$origname 777
	Ffileschmod var/www/$origname 666
	Fdoc README.Frugalware
}

# php code, no need of optimalization
