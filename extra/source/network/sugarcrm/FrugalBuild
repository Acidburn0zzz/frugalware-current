# Last modified: Sat, 29 Oct 2005 17:06:53 +0200
# Compiling time: 0 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=sugarcrm
origname=SugarSuite
pkgver=3.5.1a
pkgrel=1
pkgdesc="opensourced CRM application"
url="http://www.sugarforge.org"
license="MPL-1.1"
depends=('apache' 'php' 'mysql')
archs=('i686')
groups=('network-extra')
up2date="lynx -dump $url/|grep $origname |sed -n 's/.*-\(.*\)\.zip.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$origname-$pkgver.zip \
	$pkgname.diff README.Frugalware)
sha1sums=('22edc53af70dda9ef6c5741370c49f65081547bd' \
	'da39a3ee5e6b4b0d3255bfef95601890afd80709' \
	'a185a0383308d5ad2a990b84fdae1b88557af6b2')

build() {
	Fcd $origname-Full-$pkgver
	Fmkdir /var/www/$origname
	Fpatch $pkgname.diff
        Fcpr $origname-Full-$pkgver/* var/www/$origname
	Fdirschmod var/www/$origname 777
	Ffileschmod var/www/$origname 666
	Fdoc README.Frugalware
}

# php code, no need of optimalization
# vim: ft=sh
