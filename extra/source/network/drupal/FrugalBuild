# Last Modified: Wed, 05 Oct 2005 14:50:05 +0200
# Compiling Time: ~0SBU
# Maintainer: alex_extreme <alex.extreme2@gmail.com>

pkgname=drupal
pkgver=4.6.3
pkgrel=1
pkgdesc="An advanced content management system to manage your website"
url="http://drupal.org"
depends=('apache' 'php' 'mysql' 'webappconfig')
groups=('network-extra')
archs=('i686')
up2date="lynx -dump http://drupal.org/project/drupal|grep 'latest release'|sed 's/.*(\(.*\),.*/\1/'"
backup=(var/www/drupal/sites/default/settings.php)
source=(http://drupal.org/files/projects/drupal-$pkgver.tar.gz \
	drupalsetup README.Frugalware)
sha1sums=('40e9081279c495089335019f43ee91d56b1027d1' \
	'7f507d7cf3f410943a55f870ba22e5c337f6581f' \
	'64c0eadd7a2e00b11644458a4eeea8e3203fa739')

build()
{
	Fmkdir /var/www
	mv $Fsrcdir/$pkgname-$pkgver $Fdestdir/var/www/drupal
	Fexe /usr/bin/drupalsetup
}

# vim: ft=sh
