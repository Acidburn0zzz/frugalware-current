pkgname=cacti
pkgver=0.8.6f
pkgrel=1
pkgdesc="Cacti is a complete network graphing solution designed to harness the power of RRDTool's data storage and graphing functionality."
url="http://cacti.net/"
depends=('rrdtool' 'apache' 'mysql' 'php' 'net-snmp')
groups=('network-extra')
archs=('i686')
up2date="lynx -dump http://cacti.net/download_cacti.php | grep 'latest version' | sed  's/.*:....//'"
source=(http://www.cacti.net/downloads/$pkgname-$pkgver.tar.gz \
		  http://www.cacti.net/downloads/patches/0.8.6f/html_mouseover_title.patch \
		  http://www.cacti.net/downloads/patches/0.8.6f/multi_field_output_script_server.patch \
		  http://www.cacti.net/downloads/patches/0.8.6f/old_net_snmp_command_options.patch \
 		  http://www.cacti.net/downloads/patches/0.8.6f/poller_invalid_data_sources.patch \
		  http://www.cacti.net/downloads/patches/0.8.6f/script_server_buffer_size.patch \
		  http://www.cacti.net/downloads/patches/0.8.6f/unix_syslog_compatibility.patch \
		  http://www.cacti.net/downloads/patches/0.8.6f/graph_view_preview_mode_filter.patch \
		  http://www.cacti.net/downloads/patches/0.8.6f/poller_reindex_cache_orphans.patch \
		  http://www.cacti.net/downloads/patches/0.8.6f/safari_zoom.patch \
		  http://www.cacti.net/downloads/patches/0.8.6f/ldap_copy_user_problem.patch \
		  http://www.cacti.net/downloads/patches/0.8.6f/script_server_file_header.patch)
sha1sums=('773211bdbb39b5bb8e9e0b4dc980648e6f3b28bc' \
          '301c9a5a0f67ae1080300aef530cac2d81395825' \
          '491688250bd121ce9a04ffa58fd332ea4672643a' \
          '7f596d50721b26ab012d4e62d2043199146b75d4' \
          '577641f873b56d4bc243f868c8ac1734478e32b6' \
          'fa43d0f2a762b40ef0ee7824a6f119a3fb878af7' \
          '5e46a3be65633458ab121f02a0b39f5da0d463ef' \
          '3fa3a59960f31899f701b2e3bac79a472cce30a0' \
          '0e5a6b3612f7c884d8305e3eb20e6a7949140a1f' \
          'c8713e543e4aea854c2b56ffe6563ca6ae543595' \
          '7911a142f5de604b0b9c658015d9e3c921e603e7' \
          '5e23b2ccaf2091b42eff3c8befa5f27fc8facc98')

build()
{
	Fmkdir /var/www /usr/share/doc
	Fpatchall
	cd ..
	mv $pkgname-$pkgver $Fdestdir/var/www/cacti
	Fmv /var/www/cacti/docs/ /usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/doc/$pkgname-$pkgver/ /var/www/cacti/docs
}

