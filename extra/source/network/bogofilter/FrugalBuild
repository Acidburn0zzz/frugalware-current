# Last Modified: Thu, 17 Nov 2005 17:23:07 +0100
# Compiling Time: 0.17 SBU
# Maintainer: geekitus <geekitus@tele2.fr>

pkgname=bogofilter
pkgver=0.96.4
pkgrel=1
pkgdesc="A very fast Bayesian spam filtering tool"
url="http://bogofilter.sourceforge.net/"
license="GPL2"
up2date="lynx -dump http://sourceforge.net/projects/bogofilter/|grep 'current'|sed -n -e 's/.*bogofilter-\([0-9\.]*\).*/\1/' -e '1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('dc4a4b3cff43dc6fd9488fd3190f4a84ee109099')
groups=('network-extra')
archs=('i686')
depends=('glibc' 'db')
backup=(etc/bogofilter.cf)

build()
{
	Fbuild --localstatedir=/var \
	       --enable-transactions
	Fmv /etc/bogofilter.cf.example /etc/bogofilter.cf
	Fdocrel bogofilter.cf.example GETTING.STARTED
	Fdocrel doc/*.html doc/README.*
	Fdocrel contrib/*.example contrib/README.*
	for i in contrib/*.pl contrib/*.sh ; do
		Fexerel $i /usr/bin/`basename $i`
	done
}

# vim: ft=sh

# optimalization OK
