pkgname=dhcdbd
pkgver=1.14
pkgrel=3
pkgdesc="DHCP D-BUS daemon (dhcdbd) controls dhclient sessions with D-BUS, stores and presents DHCP options"
url="http://people.redhat.com/~jvdias/dhcdbd"
depends=('dbus' 'dhcp')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep '$pkgname' | Flasttar"
source=($url/$pkgname-$pkgver.tar.gz rc.dhcdbd rc.dhcdbd-hu.po remove_named_from_dbus_conf.patch)
sha1sums=('338a35eda47b3f6e6ce0cd67ff34bdcf10d528d6' \
	  '7c765c8ce20996e913ed74c4c891bb4cdcbfa967' \
	  '172e785bdc67183d074f608c7cea3e90914c0652' \
	  '49ff56cb1d82676c1f26f4cec387275f327ce96a')

build() {
	Fbuild
	Frcd2 $pkgname
}

