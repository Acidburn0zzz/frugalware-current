source /lib/initscripts/functions
TEXTDOMAIN=cherokee
TEXTDOMAINDIR=/lib/initscripts/messages

actions=(restart start status stop)
daemon=$"Cherokee web server"

pid="pidof cherokee 2> /dev/null"

rc_start()
{
	start_msg
	if [[ "$(eval ${pid})" == "" ]] ; then
		cherokee -b > /dev/null
		ok $?
	else
		ok 999
	fi
}

rc_stop()
{
	stop_msg
	if [[ "$(eval ${pid})" != "" ]] ; then
		killall cherokee
		ok $?
	else
		ok 999
	fi
}

rc_exec $1

