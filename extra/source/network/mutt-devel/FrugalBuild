# Last Modified: Mon, 06 Feb 2006 14:33:08 +0100
# Compiling Time: 1.91 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=mutt-devel
origname=mutt
pkgver=1.5.11
pkgrel=1
pkgdesc="A small but very powerful text-based mail client development release."
url="http://www.mutt.org/"
license="GPL"
groups=('network-extra')
archs=('i686' 'x86_64')
depends=('openssl' 'gdbm' 'gpgme' 'ncurses')
makedepends=('tetex')
conflicts=('mutt')
backup=(etc/Muttrc)
up2date="pud -p http://www.mutt.org/ -e 'Development.*? Mutt ([\d\.]*) was'"
source=(ftp://ftp.mutt.org/$origname/devel/$origname-${pkgver}.tar.gz)
sha1sums=('cc5823016fe7de6ee3a131b19a3f78796f9f53d5')

build() 
{
	cd $Fsrcdir/$origname-$pkgver/
	if [ ! -x ./configure ]; then
	  ./prepare
	fi &&
	Fbuild --enable-gpgme --enable-pgp --enable-pop --enable-imap \
	--with-ssl --enable-flock --enable-inodesort --enable-buffy-size \
	--enable-hcache --enable-nfs-fix --with-docdir=/usr/share/doc/$pkgname-$pkgver
}

# optimalization OK
