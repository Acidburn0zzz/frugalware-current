pkgname=madwifi
pkgver=20051201
pkgrel=5
pkgdesc="Madwifi drivers for Atheros wireless chipsets"
url="http://madwifi.sourceforge.net/"
Finclude kernel-module
depends=(${depends[@]} 'wireless_tools')
makedepends=(${makedepends[@]} 'sharutils')
groups=('network-extra')
archs=('i686')
up2date="$pkgver" # no releases yet
## new source is now there -> http://snapshots.madwifi.org/ but now there is *-ng *-old *-trunk 
## so I don't know which one is right for now I'll change source to  our ftp 
#source=(http://madwifi.otaku42.de/2005/12/$pkgname-cvs-snapshot-2005-12-01.tar.bz2)
source=(http://ftp.frugalware.org/pub/frugalware/frugalware-current/extra/source/network/madwifi/$pkgname-cvs-snapshot-2005-12-01.tar.bz2)
sha1sums=('c8faad7ec80f04e5d5d4f116f766bd67de7a3d07')

build()
{
	Fcheckkernel
	Fcd $pkgname
	Fmake
	Fmakeinstall KERNELPATH=/usr/src/linux-`uname -r` \
		MODULEPATH=/lib/modules/`uname -r`/kernel/drivers/net/wireless
}
