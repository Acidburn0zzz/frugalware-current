# Last Modified: Fri, 28 Oct 2005 19:33:42 +0200
# Compiling Time: 0.17 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=madwifi
pkgver=20051028
pkgrel=1
pkgdesc="Madwifi drivers for Atheros wireless chipsets"
url="http://madwifi.sourceforge.net/"
depends=('wireless_tools' 'kernel=2.6.14-1')
makedepends=('sharutils' 'kernel-source=2.6.14-1')
groups=('network-extra')
archs=('i686')
up2date="$pkgver" # no releases yet
source=(http://madwifi.otaku42.de/2005/10/$pkgname-cvs-snapshot-2005-10-28.tar.bz2)
sha1sums=('de8eb847155bb045acc65217e70867c2b4d6db6e')

build()
{
	Fcd $pkgname
	Fmake
	Fmakeinstall KERNELPATH=/usr/src/linux-`uname -r` \
		MODULEPATH=/lib/modules/`uname -r`/kernel/drivers/net/wireless
}

# vim: ft=sh
