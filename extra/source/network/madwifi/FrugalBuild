# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=madwifi
pkgver=20051006
pkgrel=1
pkgdesc="Madwifi drivers for Atheros wireless chipsets"
url="http://madwifi.sourceforge.net/"
depends=('wireless_tools' 'kernel=2.6.13-2')
makedepends=('sharutils' 'kernel-source=2.6.13-2')
groups=('network-extra')
archs=('i686')
up2date="$pkgver" # no releases yet
source=(http://madwifi.otaku42.de/2005/09/$pkgname-cvs-snapshot-2005-10-06.tar.bz2)
sha1sums=('2f7c44afbd36df4f4c02937d3fc6df3d57465ac3')

build()
{
	Fcd $pkgname
	Fmake
	Fmakeinstall KERNELPATH=/usr/src/linux-`uname -r` \
		MODULEPATH=/lib/modules/`uname -r`/kernel/drivers/net/wireless
}

# vim: ft=sh
