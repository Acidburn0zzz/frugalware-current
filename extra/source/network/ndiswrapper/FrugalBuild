# Last Modified: Fri, 28 Oct 2005 21:08:28 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=ndiswrapper
pkgver=1.4
pkgrel=1
pkgdesc="Wrapper for using Windows drivers for some wireless cards"
url="http://ndiswrapper.sourceforge.net/"
depends=('pciutils' 'wireless_tools' 'kernel=2.6.14-1')
makedepends=('kernel-source=2.6.14-1')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/projects/ndiswrapper|grep stable|sed 's/.*]\([0-9\.]*\) [A-Z].*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz \
	README.Frugalware ndiswrapper-amd64-detect-fix.patch)
sha1sums=('1f502fbc46c9775d05fcbe7a7cbc2d18cc929817' \
	  '1623cdf41a4161ffd98b7b24d70869fec715a283' \
	  '7e46cc4bb72520d911f256748e8c3936498f001b')

build()
{
	Fcd
	[ "$CARCH" == "x86_64" ] && Fpatchall
	Fmake
	Fmakeinstall
	Fdoc README.Frugalware
}

# vim: ft=sh
