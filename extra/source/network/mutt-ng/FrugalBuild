# Last Modified: Sun, 04 Sep 2005 23:42:38 +0200
# Compiling Time: 0.30 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=mutt-ng
origname=muttng
pkgver=20050903
pkgrel=1
pkgdesc="A fork of the well-known email client mutt."
url="http://mutt-ng.berlios.de"
groups=('network-extra')
archs=('i686' 'x86_64')
depends=('gdbm' 'ncurses')
backup=(etc/Muttngrc)
up2date="lynx -dump http://nion.modprobe.de/mutt-ng/snapshots/| tail -n 1 | grep $origname-[0-9\.]*\.tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://nion.modprobe.de/mutt-ng/snapshots/$origname-$pkgver.tar.gz)
sha1sums=('2edd6793db49fb1d1e4046b8d4746817a2c13a99')

build() 
{
	cd $Fsrcdir/$origname-$pkgver/
	Fbuild --enable-pgp --enable-pop --enable-imap \
	--enable-flock --enable-inodesort --enable-buffy-size \
	--enable-hcache --enable-nfs-fix
}

# vim: ft=sh

# optimalization OK
