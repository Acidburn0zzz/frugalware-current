# Last Modified: Mon, 16 Jan 2006 23:52:23 +0100
# Compiling Time: 0.02 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=scponly
pkgver=4.3
pkgrel=1
pkgdesc="Provide access to remote users without providing remote execution priviledges."
url="http://www.sublimation.org/scponly/"
depends=('openssh' 'binutils')
makedepends=('rsync')
backup=(etc/scponly/debuglevel)
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep latest|sed 's/.*-\(.*\)\.t.*/\1/'"
source=($url/$pkgname-$pkgver.tgz README.frugalware \
	$pkgname-$pkgver-getopt.patch)
sha1sums=('1aa08715d49c76ca0e78685b027e977acdd563c8' \
	  '0f3467a1dda7507c00c73648ff20803b49f1df26' \
	  '95298edb73afafa0dcda07c170dd3d502c775707')

build()
{
	Fbuild --enable-rsync-compat --enable-chrooted-binary
	Fdoc README.frugalware
}

# optimalization ok

