# Last Modified: Thu, 01 Sep 2005 15:53:56 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=supybot
pkgver=0.83.0
pkgrel=1
pkgdesc="A cross-platform IRC bot written in Python"
url="http://sourceforge.net/projects/supybot"
depends=('python')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep Supybot|sed -n 's/.*-\([^ ]*\) .*/\1/;$ p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/Supybot-$pkgver.tar.bz2)
sha1sums=('4bbcb37868cf160133ca45591887e3be2dda9780')

build()
{
	Fcd Supybot-$pkgver
	Fbuild
	Ffilerel docs/man/* /usr/share/man/man1/
	echo "Use supybot-wizard to create a configuration file." \
		>README.Frugalware
	Fdocrel README.Frugalware
}

# vim: ft=sh
