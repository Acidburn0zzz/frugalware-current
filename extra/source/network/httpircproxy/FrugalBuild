# Last Modified: Wed, 06 Jul 2005 16:07:58 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=httpircproxy
realname=HttpIrcProxy
pkgver=0.36
pkgrel=1
pkgdesc="HTTP proxy server for jmIrc"
url="http://jmirc.sourceforge.net/"
depends=('j2re')
makedepends=('j2sdk')
groups=('network-extra')
archs=('i686')
up2date="lynx -dump http://prdownloads.sourceforge.net/jmirc/|grep $realname-[0-9\.]*tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://dl.sourceforge.net/sourceforge/jmirc/$realname-$pkgver.tar.gz \
	$pkgname rc.$pkgname README.Frugalware)
md5sums=('22ede789fca9b0320933d68ed882a5ab' '2e6a3f2bb2ac97e533ff6e84e12d2a45' \
	 '8c99c2ecf48820f2cda19f6ff20d376e' '84f470d7bbcef7b3a539bce8602432f1')

build()
{
	Fcd $realname
	Fmake
	Ffilerel /usr/lib/$pkgname/$realname.jar
	Fexe /usr/bin/$pkgname
	Frcd
	Fdoc README.Frugalware
}

# vim: ft=sh
