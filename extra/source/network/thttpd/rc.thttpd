. /etc/rc.d/rc.functions

# chkconfig: 2345 85 15
# description: control Jef Poskanzer's tiny/turbo/throttling http daemon

if [ "$1" = "stop" ]; then
	stop "$stopthttpd"
	killall thttpd
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startthttpd"
	thttpd -C /var/www/thttpd_config
	ok $?
fi
