post_install()
{
	grep -q proxy /etc/group || groupadd -g 105 proxy
	id proxy &>/dev/null || useradd -u 105 -g proxy -d /var/empty proxy
	chown proxy.proxy var/{cache,log}/squid
}

post_upgrade()
{
	post_install $1
}

pre_remove()
{
	userdel proxy
	groupdel proxy
}

op=$1
shift

$op $*

