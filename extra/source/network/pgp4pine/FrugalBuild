pkgname=pgp4pine
pkgver=1.76
pkgrel=3
pkgdesc="A PGP/GnuPG wrapper for Pine and general use"
url="" # dead project
groups=('network')
archs=('i686' 'x86_64')
depends=('glibc' 'gnupg' 'pine')
up2date=$pkgver
source=(ftp://frugalware.org/pub/frugalware/frugalware-current/extra/source/network/pgp4pine/$pkgname-$pkgver.tar.gz)
md5sums=('235c44e0ef18dc3d0c78b3038c2ac56a')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	touch stamp-h.in
	make || return 1
	make prefix=$startdir/pkg/usr docdir=$startdir/pkg/usr/share/doc install
}

# vim: ft=sh
