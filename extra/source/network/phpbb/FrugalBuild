pkgname=phpbb
pkgver=2.0.19
pkgrel=1
pkgdesc="A fully-featured online forum solution for your website"
url="http://www.phpbb.com"
depends=('apache' 'php' 'mysql' 'webappconfig')
groups=('network-extra')
archs=('i686' 'x86_64')
replaces=('phpbb-php5mod')
backup=(var/www/phpBB2/config.php)
up2date="lynx -dump http://www.tuxtalk.org/phpbbver.php | sed 's/ //g' | grep ."
source=(http://heanet.dl.sourceforge.net/sourceforge/phpbb/phpBB-$pkgver.zip \
	phpbbsetup README.Frugalware)
sha1sums=('99c5fdfa6a61dfb7ba33c3e0ac217d9ed55d0234' \
	'6862e0f12cb221078507887656e415cc80e8d964' \
	'6a007fbc1ff4d95eda32fdc44de6cc9658e0f624')

build()
{
	Fmkdir /var/www/
	mv $Fsrcdir/phpBB2 $Fdestdir/var/www/ || Fdie
	Fexe /usr/bin/phpbbsetup
	Fdoc README.Frugalware
}

