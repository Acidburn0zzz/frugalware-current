. /etc/rc.d/rc.functions

# chkconfig: - 00 00
# description: Start/stop snmpd daemon

if [ "$1" = "stop" ]; then
	stop "$stopsnmpd"
	killall snmpd
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startsnmpd"
	/usr/sbin/snmpd
	ok $?
fi
