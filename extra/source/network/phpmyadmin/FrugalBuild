# Last Modified: Wed, 22 Jun 2005 15:12:47 +0200
# Compiling Time: ~1 minutes
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=phpmyadmin
pkgver=2.6.2_pl1
realver="2.6.2-pl1"
pkgrel=1
pkgdesc="set of PHP-scripts to administrate MySQL over the WWW"
url="http://www.phpmyadmin.net/home_page/"
depends=('php')
groups=('network-extra')
archs=('i686')
up2date="lynx -dump http://www.phpmyadmin.net/home_page/downloads.php|grep -1 'Latest stable' |sed -n '3 p' |sed 's/-/_/' |cut -d ' ' -f 5"
source=(http://kent.dl.sourceforge.net/sourceforge/phpmyadmin/phpMyAdmin-$realver.tar.bz2)
md5sums=('f1f9f3d84815d457e4ab9a933d62eccb')

build()
{
	Fcd ""
	Fmkdir /var/www/html
	Ffile phpMyAdmin-$realver.tar.bz2 /var/www/html
	cd $Fdestdir/var/www/html
	tar -xjf phpMyAdmin-$realver.tar.bz2
	Fln phpMyAdmin-$realver /var/www/html/phpmyadmin
	Fdocrel $pkgname/Documentation.*
	Fsed "= 'config';" "= 'http';" $Fdestdir/var/www/html/phpmyadmin/config.inc.php
	Frm /var/www/html/phpMyAdmin-$realver.tar.bz2
}

# vim: ft=sh
