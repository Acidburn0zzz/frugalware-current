pkgname=mediawiki
pkgver=1.5.2
pkgrel=1
pkgdesc="The collaborative editing software that runs Wikipedia"
url="http://wikipedia.sourceforge.net/"
depends=('apache' 'php' 'mysql')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/projects/wikipedia/|grep ' stable'|sed 's/.*MediaWiki \([0-9\.]*\).*/\1/'"
source=(http://mesh.dl.sourceforge.net/sourceforge/wikipedia/mediawiki-$pkgver.tar.gz README.Frugalware)
sha1sums=('6fd9519d102e1954997774e50bd95d490f03778f' \
          'e37e7e6956df811376f27cccee1162757ef46b54')

build()
{
	Fcd ""
	Fmkdir /var/www
	Fmv ../src/$pkgname-$pkgver /var/www
	Fln $pkgname-$pkgver /var/www/wiki
	Fdoc README.Frugalware
}
# php code, no need of optimalization
# vim: ft=sh
