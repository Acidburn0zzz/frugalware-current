pkgname=ntp
pkgver=4.2.0
pkgrel=1
pkgdesc="The ntp daemon from ntp.org"
url="http://www.ntp.org/"
#depends=('bash')
conflicts=('openntpd')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.eecis.udel.edu/~ntp/ntp_spool/ntp4/ | grep -m1 '.tar.*' | sed 's/.*\[.*\]ntp-\(.*\).tar.*/\1/'"
source=(http://www.eecis.udel.edu/~ntp/ntp_spool/ntp4/$pkgname-$pkgver.tar.gz \
	ntp-4.2.0-gcc4.diff)
sha1sums=('38343a4ebfc0b8d9aff3bec4c6a93f4c59071ce3' \
	  'a3128e2b85748ee5d12dcd447719f869e7da1f6f')

build()
{
#	CFLAGS="-static -g $CFLAGS"
	Fbuild || return 1
}

