# Last Modified: Wed, 05 Oct 2005 14:06:04 +0200
# Compiling Time: ~0SBU
# Maintainer: alex_extreme <alex.extreme2@gmail.com>

pkgname=phpbb-php5mod
pkgver=2.0.17.5
shortver=20175
pkgrel=1
pkgdesc="A fully-featured online forum solution for your website"
url="http://phpbb-php5mod.sourceforge.net"
depends=('apache' 'php' 'mysql' 'webappconfig')
groups=('network-extra')
archs=('i686' 'x86_64')
provides=('phpbb')
backup=(var/www/phpBB2/config.php)
up2date="lynx -dump http://phpbb-php5mod.sourceforge.net/portal.php?article=0|grep Announcement|sed 's/Announcement: phpBB-php5//g'|sed 's/Released//g'|sed 's/!//g'|sed 's/ //g'"
source=(http://dl.sourceforge.net/sourceforge/phpbb-php5mod/$shortver.tar.bz2 \
	phpbbsetup README.Frugalware)
sha1sums=('e6f1761eb5e8049c5be65ad69ecce84e1628139e' \
	'6862e0f12cb221078507887656e415cc80e8d964' \
	'6a007fbc1ff4d95eda32fdc44de6cc9658e0f624')

build()
{
	Fmkdir /var/www/phpBB2
	cp -R $Fsrcdir/* $Fdestdir/var/www/phpBB2 || Fdie
	Frm /var/www/phpBB2/README.Frugalware
	Frm /var/www/phpBB2/phpbbsetup
	Frm /var/www/phpBB2/$shortver.tar.bz2
	Fexe /usr/bin/phpbbsetup
	Fdoc README.Frugalware
}

