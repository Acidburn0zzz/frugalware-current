pkgname=cgiirc
pkgver=0.5.6
pkgrel=1
pkgdesc="A Perl/CGI program that lets you access IRC from a web browser"
url="http://cgiirc.sourceforge.net/"
backup=(usr/lib/libexec/cgi-bin/$pkgname/cgiirc.config)
depends=('perl')
groups=('network-extra')
up2date=`lynx -dump http://cgiirc.sourceforge.net/download/|grep latest|sed -n 's/.*s \(.*\) (.*/\1/;1 p'`
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('d93ebb4a39566303f9aaa81361443b9d')

build() {
	cd $startdir/src/$pkgname-$pkgver
	mkdir -p $startdir/pkg/usr/libexec/cgi-bin/$pkgname/
	
	rm -rf docs/
	mv * $startdir/pkg/usr/libexec/cgi-bin/$pkgname/
}

# vim: ft=sh
