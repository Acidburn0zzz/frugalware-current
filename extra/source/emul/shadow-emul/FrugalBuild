# Last Modified: Wed, 19 Oct 2005 15:04:54 +0200
# Compiling Time: 0.31 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=shadow-emul
pkgver=4.0.13
pkgrel=1
pkgdesc="Shadow password file utilities"
url="http://shadow.pld.org.pl"
depends=('glibc')
groups=('emul-extra')
archs=('x86_64')
up2date="lynx -dump http://shadow.pld.org.pl/|grep Latest|tr -s ' '|cut -d ' ' -f 4"
source=(http://ftp.frugalware.org/pub/frugalware/frugalware-current/frugalware-i686/shadow-$pkgver-$pkgrel-i686.fpm)
sha1sums=('7f0a254b1486b9ddeb91ebc5d37b8bd1bb390516')

build() {
    mkdir $Fsrcdir/tmp || return 1
    tar xjf shadow-$pkgver-$pkgrel-i686.fpm -C tmp || return 1
    Fmkdir /usr/lib/chroot32
    cp -av tmp/* $Fdestdir/usr/lib/chroot32 || return 1
}

# optimalization ok

