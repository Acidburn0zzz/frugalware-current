# Last Modified: Wed, 19 Oct 2005 14:40:30 +0200
# Compiling Time: ~7 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=ncurses-emul
pkgver=5.5
pkgrel=1
pkgdesc="A System V Release 4.0 curses emulation library for emulation of i686 on x86_64"
url="http://www.gnu.org/software/ncurses/ncurses.html"
depends=('glibc-emul')
groups=('emul-extra')
archs=('x86_64')
up2date="lynx -dump 'http://ftp.gnu.org/pub/gnu/ncurses/?M=D' |grep tar.gz$|sed -n 's/.*s-\(.*\)\.t.*/\1/;1 p'"
source=(http://ftp.frugalware.org/pub/frugalware/frugalware-current/frugalware-i686/ncurses-$pkgver-$pkgrel-i686.fpm)
sha1sums=('ee646a2dff830a5be9db78751d36a86956b186a8')

build() {
        mkdir $Fsrcdir/tmp || return 1
        tar xjf ncurses-$pkgver-$pkgrel-i686.fpm -C tmp || return 1
	Fmkdir /usr/lib/chroot32
        cp -av tmp/* $Fdestdir/usr/lib/chroot32 || return 1
}

# optimalization ok

