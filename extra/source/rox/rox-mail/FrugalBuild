# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=rox-mail
pkgver=0.3.8
pkgrel=1
pkgdesc="This applet provides mail/no mail notification by its icon."
url="http://www.kerofin.demon.co.uk/rox/mail.html"
license="GPL2"
up2date="lynx -dump $url | grep 'Mail [0-9].[0-9].[0-9]' | tail -n 1 | cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/Mail-$pkgver.tar.gz)
sha1sums=('a862dc2cc002b7a14f9a743cddf22a018195692b')
groups=('rox-extra')
archs=('i686')
depends=('python' 'rox-lib')
replaces=('mail')

build()
{
	Fmkdir /usr/bin /usr/share/{Apps,doc}
	cp -rv Mail $Fdestdir/usr/share/Apps/ || return 1
	Fmv /usr/share/Apps/Mail/Help /usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/doc/$pkgname-$pkgver /usr/share/Apps/Mail/Help
	Fln /usr/share/Apps/Mail/AppRun /usr/bin/rox-mail
}

# optimalization ok - noarch

