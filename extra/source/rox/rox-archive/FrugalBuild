pkgname=rox-archive
pkgver=2.0
pkgrel=3
pkgdesc="Archive is a very easy to use program for creating and extracting file archives."
url="http://rox.sourceforge.net/phpwiki/index.php/Archive"
rodepends=('rox-lib')
groups=('rox-extra')
archs=('i686')
license="GPL2"
up2date="lynx -dump http://rox.sourceforge.net/phpwiki/index.php/Archive | grep archive- | sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/rox/archive-$pkgver.tgz \
	$pkgname-1.9.5-fw.patch $pkgname-2.0-lzma_support.patch $pkgname)
sha1sums=('cee34ddd89c808f410ea08632a504d4bf4c25720' \
          '9fffa91aab6b26f5d93b8f0bd28de3ef1f84e640' \
          '4e4cf6b62f441679e399e4a5d2980df2be130180' \
          '6fa07c67131c35f9532a79eef0cdbd590654686c')
replaces=('archive')

build()
{
	Fmkdir /usr/share/{Apps,doc}
	Fcd archive-$pkgver
	Fpatchall
	Fcpr archive-$pkgver/Archive /usr/share/Apps/Archive
	Fexe /usr/bin/$pkgname
	Frm /usr/share/Apps/Archive/tests
	Fmv /usr/share/Apps/Archive/Help /usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/doc/$pkgname-$pkgver /usr/share/Apps/Archive/Help
}

# vim: ft=sh
# optimalization OK - noarch
