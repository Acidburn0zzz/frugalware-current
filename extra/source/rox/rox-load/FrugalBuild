# Compiling Time: 0.03 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=rox-load
pkgver=2.1.3
pkgrel=1
pkgdesc="This applet displays the load average of your system."
url="http://www.kerofin.demon.co.uk/rox/load.html"
license="GPL2"
up2date="lynx -dump $url|grep 'Load [0-9\.]\+[0-9]'|tail -n 1|cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/Load-$pkgver.tar.gz)
sha1sums=('038559609d62dc5473b5663a3e119170290d427b')
groups=('rox-extra')
archs=('i686')
depends=('libgtop' 'rox-clib>=2.1.6')
replaces=('load')

build()
{
	Load/AppRun --compile || return 1
	sed -i 's|APPDIRPATH="$HOME/Apps:/usr/local/apps:/usr/apps|&:/usr/share/Apps|' \
		Load/libdir || return 1
	Fmkdir /usr/bin /usr/share/{Apps,doc}
	cp -rv Load $Fdestdir/usr/share/Apps/ || return 1
	Frm /usr/share/Apps/Load/{.cvsignore,src}
	cp -r $Fdestdir/usr/share/Apps/Load/Help $Fdestdir/usr/share/doc/$pkgname-$pkgver || return 1
	Fln /usr/share/Apps/Load/AppRun /usr/bin/$pkgname
}

# optimalization ok - i686

# vim: ft=sh
