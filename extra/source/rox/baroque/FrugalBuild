pkgname=baroque
pkgver=0.5.1
pkgrel=1
pkgdesc="Baroque is a small panel app for Rox, which begot BatMonitor."
url="http://ppprs1.phy.tu-dresden.de/~riemer/projects/baroque/index.php?order=program&lang=en"
license="Copyright (C) 2002-2003 Rds and Tilo Riemer"
up2date="lynx -dump 'http://ppprs1.phy.tu-dresden.de/~riemer/projects/baroque/index.php?order=download&lang=en' | grep -m 1 -o baroque-[0-9].[0-9].[0-9] | tr -d [[:blank:][:alpha:]-]"
source=(http://ppprs1.phy.tu-dresden.de/~riemer/projects/acpi.py/page.30.download/page.10.acpi.py/page.020.0.3.0/acpi.py-0.3.0-0-generic-src.tgz
        http://ppprs1.phy.tu-dresden.de/~riemer/projects/apm.py/apm.py-0.3.0-0-generic-src.tgz
	http://ppprs1.phy.tu-dresden.de/~riemer/projects/baroque/page.02.download/page.01.baroque/page.07.0.5.1/baroque-0.5.1.tgz)
md5sums=('c200fc6ef00c774154ff899a0073220b' '11c49ee7a888067f0f5dcf41fc2fe53e'
         '8c55c5c5b4477debf4115b462181506a')
groups=('rox-extra')
archs=('i686')
depends=('pygtk' 'rox-lib' 'rox-session')

build()
{
	Fmkdir /usr/share/Apps
	cp -rv Baroque $Fdestdir/usr/share/Apps/ || return 1
	Fmv /usr/share/Apps/Baroque/TODO /usr/share/Apps/Baroque/Help/
	Fdoc Baroque/TODO Baroque/Help/*
	Fexe ACPI/acpi.py/acpi.py /usr/share/Apps/Baroque
	Fmkdir /usr/share/doc/$pkgname-$pkgver/acpi.py
	Ffile ACPI/ChangeLog ACPI/INSTALL ACPI/LICENSE ACPI/README \
		ACPI/TODO /usr/share/doc/$pkgname-$pkgver/acpi.py
	Fcd apm.py-0.3.0/apm_lowlevel.py
	Fmake || return 1
	Fmakeinstall
	Fexe apm.py-0.3.0/apm.py/apm.py /usr/share/Apps/Baroque
	Fmkdir /usr/share/doc/$pkgname-$pkgver/apm.py
	Ffile apm.py-0.3.0/ChangeLog apm.py-0.3.0/INSTALL \
		apm.py-0.3.0/LICENSE apm.py-0.3.0/README \
		/usr/share/doc/$pkgname-$pkgver/apm.py
}

# optimalization ok - noarch

