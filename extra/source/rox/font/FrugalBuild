# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=font
pkgver=0.8
pkgrel=1
pkgdesc="Choose default fonts and fine-tune font rendering."
url="http://roxos.sunsite.dk/dev-contrib/guido/Configure/"
license="GPL2"
up2date="if [ `lynx -dump $url | grep Font | wc -l` -eq 3 ] ; then echo $pkgver; else echo new; fi"
source=($url/Font-$pkgver.tar.bz2)
md5sums=('55ded008ea80ce1c1b14798b6441dc0d')
groups=('rox-extra')
archs=('i686')
depends=('python' 'rox-lib' 'rox-session')

build()
{
	Fmkdir /usr/share/Apps
	cp -rv Font $Fdestdir/usr/share/Apps/ || return 1
	Fdoc Font/Help/*
}

# optimalization ok - noarch

