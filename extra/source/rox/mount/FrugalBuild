pkgname=mount
pkgver=0.5
pkgrel=1
pkgdesc="Volume Manager Configuration for ROX"
url="http://roxos.sunsite.dk/dev-contrib/guido/Configure/"
license="GPL2"
up2date="if [ `lynx -dump $url | grep Mount | wc -l` -eq 9 ] ; then echo $pkgver; else echo new; fi"
source=($url/Mount-$pkgver.tar.bz2)
md5sums=('25b9afe2de77eeafc8ae124b01689a73')
groups=(rox-extra)
archs=('i686')
depends=('')

build()
{
	Fmkdir /usr/share/Apps
	cp -rv Mount $Fdestdir/usr/share/Apps/ || return 1
	Fdoc Mount/Help/*
}

# optimalization ok - noarch

