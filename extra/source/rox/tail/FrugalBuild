# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=tail
pkgver=2.1.2
pkgrel=1
pkgdesc="This program displays the contents of a text file."
url="http://www.kerofin.demon.co.uk/rox/tail.html"
license="GPL2"
up2date="lynx -dump $url | grep 'Tail [0-9].[0-9].[0-9]' | tail -n 1 | cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/Tail-$pkgver.tar.gz)
md5sums=('d5243ccebe206c4173efe6eff3e47d28')
groups=('rox-extra')
archs=('i686')
depends=('gtk+2' 'python' 'rox-clib')

build()
{
	Tail/AppRun --compile || return 1
	Fmkdir /usr/share/Apps
	cp -rv Tail $Fdestdir/usr/share/Apps/ || return 1
	Frm /usr/share/Apps/Tail/.cvsignore /usr/share/Apps/Tail/src
	Fdoc Tail/Help/*
}

# optimalization ok - i686

