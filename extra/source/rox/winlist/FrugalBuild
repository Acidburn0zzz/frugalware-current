pkgname=winlist
pkgver=006
pkgrel=1
pkgdesc="Panel applet for the ROX Desktop that gives you a popup menu of all open windows."
url="http://kymatica.bitminds.net/software.html"
license="GPL2"
up2date="lynx -dump $url|grep -m 1 -o 'WinList-[0-9]\+'|grep -o '[0-9]\+'"
source=(http://kymatica.bitminds.net/rox/WinList-$pkgver.tar.bz2)
md5sums=('2fc4f5926eb5da7df8a2481876ce7f74')
groups=('rox-extra')
archs=('i686')
depends=('python' 'rox-lib')

build()
{
    Fmkdir /usr/share/Apps
    cp -rv WinList $Fdestdir/usr/share/Apps/ || return 1
    Fdoc WinList/Help/*
}

# optimalization ok - noarch

