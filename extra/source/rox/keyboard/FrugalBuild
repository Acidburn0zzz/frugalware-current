# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=keyboard
pkgver=0.9.3
pkgrel=1
pkgdesc="Keyboard lets you change keyboard layout, shortcuts and text cursor behaviour."
url="http://roxos.sunsite.dk/dev-contrib/guido/Configure/"
license="GPL2"
up2date="if [ `lynx -dump $url | grep Keyboard | wc -l` -eq 9 ] ; then echo $pkgver; else echo new; fi"
source=($url/Keyboard-$pkgver.tar.gz)
md5sums=('a751e74ceb3cbb0cfb7ad6ebf11bf712')
groups=('rox-extra')
archs=('i686')
depends=('python' 'rox-lib' 'rox-session')

build()
{
	Fmkdir /usr/share/Apps
	cp -rv Keyboard $Fdestdir/usr/share/Apps/ || return 1
	Fdoc Keyboard/Help/*
}

# optimalization ok - noarch

