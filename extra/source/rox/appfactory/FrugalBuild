# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=appfactory
pkgver=2.1.3
pkgrel=2
pkgdesc="This program automates the creation of ROX wrappers for non-ROX programs."
url="http://www.kerofin.demon.co.uk/rox/appfactory.html"
license="GPL2"
up2date="lynx -dump $url | grep 'AppFactory [0-9].[0-9].[0-9]' | tail -n 1 | cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/AppFactory-$pkgver.tar.gz)
md5sums=('d2d343ac40e4dd184a09995c3778f644')
groups=('rox-extra')
archs=('i686')
depends=('rox-clib')

build()
{
	AppFactory/AppRun --compile || return 1
	Fmkdir /usr/share/Apps
	cp -rv AppFactory $Fdestdir/usr/share/Apps/ || return 1
	Frm /usr/share/Apps/AppFactory/{.cvsignore,src}
	Fdoc AppFactory/Help/*
}

# optimalization ok - i686

# vim: ft=sh
