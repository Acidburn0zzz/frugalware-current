pkgname=rox-songer
pkgver=0.1.2
pkgrel=1
pkgdesc="Songer is an ID3 tagger designed for the ROX desktop"
url="http://songer.sourceforge.net/"
license="GPL2"
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=82159'|grep -m 1 -o '[0-9\.]\+\.tgz'|sed 's/.tgz//'"
source=(http://dl.sourceforge.net/sourceforge/songer/songer-$pkgver.tgz)
sha1sums=('8e3dcbdfb7421488fdc3d6abb317d0c1eda77aa4')
groups=('rox-extra')
archs=('i686')
rodepends=('rox-lib')

build()
{
	Fmkdir /usr/share/{Apps,doc}
	Fcpr songer-$pkgver/Songer /usr/share/Apps
	Fln /usr/share/Apps/Songer/Help /usr/share/doc/$pkgname-$pkgver
}

# optimalization OK - noarch

