pkgname=oroborox-themes
pkgver=0.1
pkgrel=1
pkgdesc="Additional themes for OroboROX."
url="http://rox.sourceforge.net/phpwiki/index.php/OroboROX"
license="Unknown"
up2date="$pkgver"
source=(http://www.hayber.us/rox/themes/thebear-03.tgz
	http://www.students.uni-marburg.de/~Klossa/oroborox-win95-0.1.tar.gz
	http://www.students.uni-marburg.de/~Klossa/oroborox-xaguar-theme-0.1.tar.gz
	http://cyrille.mars.free.fr/links/b5-flat.tgz
	http://www.raelh.plus.com/unix/OroboTheme-AlePanther-1.0.tar.bz2
	http://www.hayber.us/rox/themes/bluegreen-02.tgz
	http://www.students.uni-marburg.de/~Klossa/oroborox-lx-theme-0.1.tar.gz)
md5sums=('e5858836e43eb57153bf3ff833f28ed1' '675480dce787f4ec59dd766df35c44fa'
	'40ea9599e4391b9f48ac6e49bdb5a014' '3c110ff4d94fd9fa861911e2178d8bbe'
	'5f312b59bca9e3e89aac1cfc3cd2bcd7' 'c619ff9c281944e91635ad2412663ecc'
	'eb2deb5ed93dcc1e240e7c695e7184f4')
groups=('rox-extra')
archs=('i686')
depends=('oroborox')

build()
{
	Fmkdir /usr/share/Apps/OroboROX/Configure/Themes \
		/usr/share/doc/$pkgname-$pkgver
	
	cp -rv TheBear $Fdestdir/usr/share/Apps/OroboROX/Configure/Themes/ || return 1
	cp -v TheBear/README $Fdestdir/usr/share/doc/$pkgname-$pkgver/README-TheBear
	
	cp -rv Win95 $Fdestdir/usr/share/Apps/OroboROX/Configure/Themes/ || return 1
	cp -v Win95/README $Fdestdir/usr/share/doc/$pkgname-$pkgver/README-Win95
	
	cp -rv Xaguar $Fdestdir/usr/share/Apps/OroboROX/Configure/Themes/ || return 1
	cp -v Xaguar/README $Fdestdir/usr/share/doc/$pkgname-$pkgver/README-Xaguar
	Frm /usr/share/Apps/OroboROX/Configure/Themes/Xaguar/buttons_old

	cp -rv b5-flat $Fdestdir/usr/share/Apps/OroboROX/Configure/Themes/ || return 1
	cp -v b5-flat/README $Fdestdir/usr/share/doc/$pkgname-$pkgver/README-b5-flat
	Frm /usr/share/Apps/OroboROX/Configure/Themes/b5-flat/.close-active.xpm.swp

	cp -rv AlePanther $Fdestdir/usr/share/Apps/OroboROX/Configure/Themes/ || return 1
	cp -v AlePanther/README $Fdestdir/usr/share/doc/$pkgname-$pkgver/README-AlePanter

	cp -rv BlueGreen $Fdestdir/usr/share/Apps/OroboROX/Configure/Themes/ || return 1
	cp -v BlueGreen/README $Fdestdir/usr/share/doc/$pkgname-$pkgver/README-BlueGreen

	cp -rv LX $Fdestdir/usr/share/Apps/OroboROX/Configure/Themes/ || return 1
	cp -v LX/README $Fdestdir/usr/share/doc/$pkgname-$pkgver/README-LX
}

# optimalization ok - noarch

