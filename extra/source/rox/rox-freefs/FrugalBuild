# Compiling Time: 0.02 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=rox-freefs
pkgver=2.1.4
pkgrel=1
pkgdesc="Monitor free space on a file system."
url="http://www.kerofin.demon.co.uk/rox/freefs.html"
license="GPL2"
up2date="lynx -dump $url|grep 'FreeFS [0-9\.]\+[0-9]'|tail -n 1|cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/FreeFS-$pkgver.tar.gz)
sha1sums=('0a6b18905f6cd876ab38f7ef742b74a8311fd5d7')
groups=('rox-extra')
archs=('i686')
depends=('libgtop' 'rox-clib')
replaces=('freefs')

build()
{
	[ $CHROOT -eq 1 ] && sudo touch /etc/fstab
	FreeFS/AppRun --compile || return 1
	sed -i 's|APPDIRPATH="$HOME/Apps:/usr/local/apps:/usr/apps|&:/usr/share/Apps|' \
		FreeFS/libdir
	Fmkdir /usr/bin /usr/share/{Apps,doc}
	cp -r FreeFS $Fdestdir/usr/share/Apps/ || return 1
	cp -r $Fdestdir/usr/share/Apps/FreeFS/Help $Fdestdir/usr/share/doc/$pkgname-$pkgver || return 1
	Frm /usr/share/Apps/FreeFS/{.cvsignore,src}
	Fln /usr/share/Apps/FreeFS/AppRun /usr/bin/$pkgname
	[ $CHROOT -eq 1 ] && sudo rm /etc/fstab
}

# optimalization ok - i686

