# Last Modified: Mon, 05 Sep 2005 18:48:53 +0200
# Compiling Time: ~0.01 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=rox-netstat
pkgver=0.1.1
pkgrel=1
pkgdesc="This applet displays the current network activity."
url="http://www.kerofin.demon.co.uk/rox/netstat.html"
up2date="lynx -dump $url | grep -o 'NetStat-[0-9\.]\+.tar.gz' | tail -n 1 | cut -d - -f 2 | sed 's|.tar.gz||'"
source=(http://www.kerofin.demon.co.uk/rox/NetStat-$pkgver.tar.gz)
sha1sums=('0372966be5c1a380cd6b70ff78557c3de434903b')
groups=('rox-extra')
archs=('i686')
depends=('rox-lib')

build()
{
	Fmkdir /usr/share/Apps/
	cp -r NetStat $Fdestdir/usr/share/Apps/ || return 1
	Fmkdir /usr/{bin,share/doc}
	Fmv /usr/share/Apps/NetStat/Help /usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/doc/$pkgname-$pkgver /usr/share/Apps/NetStat/Help
	Fln /usr/share/Apps/NetStat/AppRun /usr/bin/$pkgname
}

# vim: ft=sh

# optimalization OK - noarch
