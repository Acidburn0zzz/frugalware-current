# Last Modified: Wed, 21 Dec 2005 03:01:26 +0100
# Compiling Time: 0.11 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=rox-menu
pkgver=1.0.2
pkgrel=2
pkgdesc="ROX-Menu is an application menu for ROX."
url="http://www.skepticats.com/rox/rox-menu.html"
license="GPL2"
up2date="lynx -dump http://www.skepticats.com/rox/rox-menu.html | grep -A 2 'Current Version' | tail -n 1 | cut -d ' ' -f 6"
source=(http://www.skepticats.com/rox/dist/ROX-Menu-$pkgver.tar.bz2 rox-menu_apps-path.diff)
sha1sums=('e8a6d73b86120a21b8842ac0d4e5a3dd82c43ac7' \
          'ffb40c84708d06d371ab72bad016e4a49560e51d')
groups=('rox-extra')
archs=('i686')
depends=('gtk+2' 'libxml2' 'rox-clib')

build()
{
	ln -s ROX-Menu $pkgname-$pkgver
	chmod 0755 ROX-Menu ROX-Menu/Help ROX-Menu/Help/Icons
	Fpatch rox-menu_apps-path.diff
	cd ..
	ROX-Menu/AppRun --compile || return 1
	Fmkdir /usr/share/{Apps,doc}
	Frm ROX-Menu/{makedist.sh,src} ROX-Menu/Help/{mkappdir.sh,wrap-dir.sh}
	Fcpr ROX-Menu /usr/share/Apps/ROX-Menu
	Fmv /usr/share/Apps/ROX-Menu/Help /usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/doc/$pkgname-$pkgver /usr/share/Apps/ROX-Menu/Help
}

# optimalization ok - i686

# vim: ft=sh
