pkgname=tasklist
pkgver=0.0.2
pkgrel=1
pkgdesc="A simple tasklist applet which can run in a ROX-Filer panel."
url="http://www.intersect-uk.co.uk/soft.rbx/Tasklist/"
license="GPL2"
up2date="lynx -dump $url | grep Version | tr -d [[:blank:][:alpha:]]"
source=(http://www.intersect-uk.co.uk/projects/Tasklist/tasklist-$pkgver.tar.bz2)
md5sums=('319661b93234c2c0e63fa6108a9ce043')
groups=('rox-extra')
archs=('i686')
depends=('libxml2' 'libwnck' 'python')

build()
{
	Fcd
	TaskList/AppRun --compile || return 1
	Fmkdir /usr/share/Apps
	cp -rv TaskList $Fdestdir/usr/share/Apps/ || return 1
	Frm /usr/share/Apps/TaskList/src /usr/share/Apps/TaskList/debian
	Fdocrel TaskList/Help/*
}

# optimalization ok - i686

