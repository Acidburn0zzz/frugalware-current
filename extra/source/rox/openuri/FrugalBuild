pkgname=openuri
pkgver=040110
pkgrel=1
pkgdesc="A little application for ROX that handles .uri files."
url="http://kymatica.bitminds.net/software.html"
license="GPL2"
up2date="lynx -dump $url|grep -m 1 -o 'OpenURI-[0-9]\+'|grep -o '[0-9]\+'"
source=(http://kymatica.bitminds.net/rox/OpenURI-$pkgver.tar.bz2)
md5sums=('79ceb8018b5d8960844178edb14f077a')
groups=('rox-extra')
archs=('i686')
depends=('python' 'rox-lib')

build()
{
	Fmkdir /usr/share/Apps
	cp -rv OpenURI $Fdestdir/usr/share/Apps/ || return 1
	Fdoc OpenURI/Help/*
}

# optimalization ok - noarch

