pkgname=rox-tasklist2
pkgver=0.5
pkgrel=1
pkgdesc="A panel applet that shows a list of currently open applications"
url="http://rox.sourceforge.net/desktop/Tasklist"
license="GPL2"
up2date="lynx -dump $url|grep -A 1 'Current.*version'|grep -o '[0-9\.]\+'"
source=(http://sheen.fallingsnow.net/Software/Tasklist-$pkgver.tgz)
sha1sums=('3ca19b2b527576adc48e748c43d2f14ce78ef47e')
groups=('rox-extra')
archs=('i686')
depends=('libwnck' 'expat' 'libxml2')

build()
{
	Fcd Tasklist-$pkgver
	./AppRun --compile || Fdie
	cd .. || Fdie
	Fmkdir /usr/share/{Apps,doc}
	Fcpr Tasklist-$pkgver /usr/share/Apps
	Fln /usr/share/Apps/Tasklist-$pkgver /usr/share/doc/$pkgname-$pkgver
	Frm /usr/share/Apps/Tasklist-$pkgver/{Help/README~,src}
}

# optimalization OK

# vim: ft=sh
