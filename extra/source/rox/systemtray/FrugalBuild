# Last Modified: Mon, 06 Jun 2005 19:55:11 +0200
# Compiling Time: ~0.04 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=systemtray
pkgver=0.2
pkgrel=1
pkgdesc="SystemTray is a system tray applet for ROX-Filer."
url="http://home.comcast.net/~andyhanton/software/"
license="GPL2"
up2date="lynx -dump $url | grep -m 1 released | cut -d ' ' -f 6"
source=($url/SystemTray-$pkgver.tgz)
md5sums=('dd2bd6dafc99ae0fb7857dc40f5ff918')
groups=('rox-extra')
archs=('i686')
depends=('gtk+2' 'libxml2'  'python')

build()
{
	SystemTray/AppRun --compile || return 1
	Fmkdir /usr/share/Apps
	cp -rv SystemTray $Fdestdir/usr/share/Apps/ || return 1
	Frm /usr/share/Apps/SystemTray/src
	Fdoc SystemTray/Help/*
}

# optimalization ok - i686

