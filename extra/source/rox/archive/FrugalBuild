pkgname=archive
pkgver=1.9.5
pkgrel=1
pkgdesc="Archive is a very easy to use program for creating and extracting file archives."
url="http://rox.sourceforge.net/phpwiki/index.php/Archive"
license="GPL2"
depends=('rox-lib')
groups=('rox-extra')
archs=('i686')
up2date="lynx -dump http://rox.sourceforge.net/phpwiki/index.php/Archive | grep archive- | sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://mesh.dl.sourceforge.net/sourceforge/rox/$pkgname-$pkgver.tgz \
	archive)
md5sums=('3acb95461a0e95f3bdcd0aca9470925d' 'f2bfe5b65af0fe53f8e70f0a32b72a97')

build() {
  Fmkdir usr/share/Apps
  Fcd
  cp -r Archive $Fdestdir/usr/share/Apps/
  Fexe usr/bin/archive
  Frm usr/share/Apps/Archive/tests
  Frm usr/share/Apps/Archive/Help
  Fdoc $pkgname-$pkgver/Archive/Help/*
  Fln /usr/share/doc/$pkgname-$pkgver/ usr/share/Apps/Archive/Help
}

# optimalization OK - noarch

# vim: ft=sh
