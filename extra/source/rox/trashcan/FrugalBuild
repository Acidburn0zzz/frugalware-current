pkgname=trashcan
pkgver=031127
pkgrel=1
pkgdesc="Yet another simple ROX wrapper for libtrash."
url="http://kymatica.bitminds.net/software.html"
license="GPL2"
up2date="lynx -dump $url | grep -m 1 TrashCan | cut -d ' ' -f 6 | sed 's|20||' | tr -d -"
source=(http://kymatica.bitminds.net/rox/TrashCan-$pkgver.tar.bz2)
md5sums=('5a0029bfe91e385ef2bcc783ad222372')
groups=('rox-extra')
archs=('i686')
depends=('libtrash' 'python' 'rox-lib')

build()
{
	Fmkdir /usr/share/Apps
	cp -rv TrashCan $Fdestdir/usr/share/Apps/ || return 1
	Fdoc TrashCan/Help/COPYING TrashCan/Help/README
}

# optimalization ok - noarch

