pkgname=clock
pkgver=2.1.5
pkgrel=1
pkgdesc="This is a panel clock, with support for setting alarms."
url="http://www.kerofin.demon.co.uk/rox/clock.html"
license="GPL2"
up2date="lynx -dump $url | grep 'Clock [0-9].[0-9].[0-9]' | tail -n 1 | cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/Clock-$pkgver.tar.gz)
md5sums=('a15a3b97e5c5a01dd0ee1a88fa805f22')
groups=('rox-extra')
archs=('i686')
depends=('gtk+2' 'libxml2' 'python' 'rox-clib')

build()
{
	Fmkdir /usr/share/Apps
	Clock/AppRun --compile || return 1
	cp -rv Clock $Fdestdir/usr/share/Apps/ || return 1
	Frm /usr/share/Apps/Clock/.cvsignore
	Fdoc Clock/Help/*
}

# optimalization ok - noarch

# vim: ft=sh
