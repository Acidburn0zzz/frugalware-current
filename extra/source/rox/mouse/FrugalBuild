# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=mouse
pkgver=0.8.3
pkgrel=1
pkgdesc="Mouse lets you configure mouse buttons and mouse cursor."
url="http://roxos.sunsite.dk/dev-contrib/guido/Configure/"
license="GPL2"
up2date="if [ `lynx -dump $url | grep Mouse | wc -l` -eq 9 ] ; then echo $pkgver; else echo new; fi"
source=($url/Mouse-$pkgver.tar.gz)
md5sums=('d354ef33982bc7a1e0fa06a051a786d4')
groups=(rox-extra)
archs=('i686')
depends=('python' 'rox-lib')

build()
{
	Fmkdir /usr/share/Apps
	cp -rv Mouse $Fdestdir/usr/share/Apps/ || return 1
	Fdoc Mouse/Help/*
}

# optimalization ok - noarch

# vim: ft=sh
