pkgname=toolbar-and-menu
pkgver=0.8
pkgrel=1
pkgdesc="Configure GTK properties"
url="http://roxos.sunsite.dk/dev-contrib/guido/Configure/"
license="GPL2"
up2date="if [ `lynx -dump $url | grep Toolbar\&Menus | wc -l` -eq 3 ] ; then echo 0.8; else echo "new"; fi"
source=(http://roxos.sunsite.dk/dev-contrib/guido/Configure/Toolbar\&Menus-$pkgver.tar.bz2)
md5sums=('1b819c227ae89e2fee9aa1a69e8bd904')
groups=('rox-extra')
archs=('i686')
depends=('python' 'rox-lib')

build()
{
	Fmkdir /usr/share/Apps
	cp -rv Toolbar\&Menus $Fdestdir/usr/share/Apps/ || return 1
	Fdoc Toolbar\&Menus/Help/*
}

# optimalization ok - noarch

