# Compiling Time: 0.07 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=rox-mem
pkgver=2.1.4
pkgrel=1
pkgdesc="This applet displays the current memory usage and the current swap space usage."
url="http://www.kerofin.demon.co.uk/rox/mem.html"
license="GPL2"
up2date="lynx -dump $url | grep 'Mem [0-9].[0-9].[0-9]' | tail -n 1 | cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/Mem-$pkgver.tar.gz)
sha1sums=('cd0e1649eea73a7a3af1ec9e98941f02884fceca')
groups=('rox-extra')
archs=('i686')
depends=('libgtop' 'python' 'rox-clib>=2.1.6')
replaces=('mem')

build()
{
	Fmkdir /usr/bin /usr/share/{Apps,doc}
	Mem/AppRun --compile || return 1
	sed -i 's|APPDIRPATH="$HOME/Apps:/usr/local/apps:/usr/apps|&:/usr/share/Apps|' \
		Mem/libdir || return 1
	cp -rv Mem $Fdestdir/usr/share/Apps/ || return 1
	Frm /usr/share/Apps/Mem/{src,.cvsignore}
	Fmv /usr/share/Apps/Mem/Help /usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/doc/$pkgname-$pkgver /usr/share/Apps/Mem/Help
	Fln /usr/share/Apps/Mem/AppRun /usr/bin/rox-mem
}

# optimalization ok - i686

