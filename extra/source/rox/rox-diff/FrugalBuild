# Compiling Time: 0.04 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=rox-diff
pkgver=2.1.3
pkgrel=1
pkgdesc="This program displays a coloured context diff between two files."
url="http://www.kerofin.demon.co.uk/rox/diff.html"
license="GPL2"
up2date="lynx -dump $url|grep 'Diff [0-9\.]\+[0-9]'|tail -n 1|cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/Diff-$pkgver.tar.gz)
sha1sums=('a12809396d7405587acabf51670a0c8b6ec6919f')
groups=('rox-extra')
archs=('i686')
depends=('rox-clib>=2.1.6')
replaces=('diff')

build()
{
	Diff/AppRun --compile || return 1
	sed -i 's|APPDIRPATH="$HOME/Apps:/usr/local/apps:/usr/apps|&:/usr/share/Apps|' \
		Diff/libdir
	Fmkdir /usr/bin /usr/share/{Apps,doc}
	cp -rv Diff $Fdestdir/usr/share/Apps/ || return 1
	Frm /usr/share/Apps/Diff/.cvsignore /usr/share/Apps/Diff/src
	cp -r $Fdestdir/usr/share/Apps/Diff/Help $Fdestdir/usr/share/doc/$pkgname-$pkgver || return 1
	Fln /usr/share/Apps/Diff/AppRun /usr/bin/$pkgname
}

# optimalization ok - i686

# vim: ft=sh
