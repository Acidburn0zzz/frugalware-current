pkgname=mime-editor
pkgver=0.4
pkgrel=1
pkgdesc="Editor for the Shared MIME Database."
url="http://rox.sourceforge.net/phpwiki/index.php/Archive"
depends=('rox-lib' 'shared-mime-info')
groups=('rox-extra')
archs=('i686')
up2date="lynx -dump http://rox.sourceforge.net/phpwiki/index.php/MIME-Editor | grep mime-editor- | sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://mesh.dl.sourceforge.net/sourceforge/rox/$pkgname-$pkgver.tgz)
sha1sums=('4618155bad19abcad8fab5200b29269167b6d50e')

build() {
  Fmkdir usr/share/Apps
  Fcd
  cp -r MIME-Editor $Fdestdir/usr/share/Apps/
  Fln /usr/share/Apps/MIME-Editor/AppRun /usr/bin/rox-mime-editor
  Frm usr/share/Apps/MIME-Editor/Help
  Fdoc $pkgname-$pkgver/MIME-Editor/Help/*
  Fln /usr/share/doc/$pkgname-$pkgver/ usr/share/Apps/MIME-Editor/Help
}

# optimalization OK - noarch

