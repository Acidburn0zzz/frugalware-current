# BIG FAT UGLY WARNING: DO NOT BUILD FOR x86_64! IF YOU WANT XEN TO WORK ON x86_64, DONATE ME
# A 64-BIT MACHINE

pkgver=2.6.16
pkgrel=3
_F_kernel_vmlinuz="vmlinuz"
_F_kernel_name="-xen0"
_F_kernel_patches=(smp-alts.patch \
	pmd-shared.patch \
	net-csum.patch \
	x86-increase-interrupt-vector-range.patch \
	i386-mach-io-check-nmi.patch \
	device_bind.patch \
	http://ftp.frugalware.org/pub/other/people/alex/linux-$pkgver-xen.patch.bz2)
Finclude kernel
pkgdesc="The Xen domain 0 Linux Kernel and modules"
rodepends=('module-init-tools' 'xen')
groups=('base-extra')
archs=('i686' '!x86_64')
source=(${source[@]} README.Frugalware)
signatures=("${signatures[@]}" '')
unset install

build()
{
	Fbuildkernel
	Fdoc README.Frugalware
}
