pkgname=gplflash
pkgver=0.4.13
pkgrel=1
pkgdesc="An OpenSource Flash Plugin"
url="http://gplflash.sourceforge.net/"
depends=('libmad' 'libjpeg' 'x' 'zlib')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/projects/gplflash/ | grep 'gplflash.*\([0-9]\+\.\)\+' | cut -d ' ' -f 5 | cut -d ']' -f 2"
source=(http://dl.sourceforge.net/sourceforge/gplflash/$pkgname-$pkgver.tar.bz2)
md5sums=('1b14c21094eb07416842ac0f5298b3f1')

build()
{
	Fsed '-O3' '' lib/Makefile.in
	Fbuild || return 1
}

