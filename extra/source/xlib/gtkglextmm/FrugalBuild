pkgname=gtkglextmm
pkgver=1.1.0
pkgrel=1
pkgdesc="GL extensions for Gtk+ 2.0"
url="http://gtkglext.sourceforge.net/"
depends=('gtkmm' 'gtkglext')
makedepends=('intltool' 'doxygen')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/gtkglext/?sort_by=date&sort=desc'|grep gtkglextmm-[0-9\.]*.tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/gtkglext/$pkgname-$pkgver.tar.bz2)
sha1sums=('1f4b70d31cf93348ca45e5daf0dbcfa5394172ea')

# NOTE: if you using any closed source drivers (nvidia or ati) then you MUST build this in
#	chroot !!!

build() {
	Fbuild --enable-doxygen-doc
}

# optimalization OK
