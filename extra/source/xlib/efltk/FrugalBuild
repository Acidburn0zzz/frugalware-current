pkgname=efltk
pkgver=2.0.5
pkgrel=1
pkgdesc="EFltk is a LGPL'd C++ graphical user interface toolkit"
url="http://ede.sourceforge.net/"
license="LGPL"
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=49891&package_id=58021'|grep -o -m 1 '[0-9\.]\+\.tar\.bz2'|sed 's/.tar.bz2//'"
source=(http://dl.sourceforge.net/sourceforge/ede/$pkgname-$pkgver.tar.bz2)
sha1sums=('26f7124b384d0bfe3d28a73cbdf0111432b08d99')
groups=('xlib-extra')
archs=('i686')
makedepends=('gcc-3.3')
depends=('libxext' 'libjpeg' 'libstdc++' 'libpng')

build()
{
	Fcd $pkgname
	Fmkdir /usr/{bin,include,lib}
	CC=gcc-3.3 CXX=g++-3.3 Fbuild --enable-opengl --enable-utf8 \
	--disable-xft --enable-plugins
}

