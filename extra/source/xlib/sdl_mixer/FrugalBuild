# Last Modified: Mon, 13 Jun 2005 20:01:51 +0000
# Compiling time: ~1 minute
# Maintainer: krix <krics@linuxforum.hu>

pkgname=sdl_mixer
realname=SDL_mixer
pkgver=1.2.6
pkgrel=2
pkgdesc="SDL Mixer library"
url="http://www.libsdl.org/projects/SDL_mixer/"
depends=('sdl' 'libmikmod' 'libvorbis')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.libsdl.org/projects/$realname/|grep /$realname-.*tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/'"
source=(http://www.libsdl.org/projects/$realname/release/$realname-$pkgver.tar.gz)
md5sums=('2b8beffad9179d80e598c22c80efb135')

build()
{
	Fcd $realname-$pkgver
	Fbuild || return 1
}

