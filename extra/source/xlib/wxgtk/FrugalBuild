# Last Modified: Wed, 25 Jan 2006 10:58:21 +0100
# Compiling Time: ~1 hour on factory.frugalware.org
# Maintainer: Miklos Nemeth <desco@frugalware.org>

pkgname=wxgtk
pkgver=2.6.3
pkgrel=2
pkgdesc="GTK+ implementation of wxWidgets API for GUI'"
url="http://www.wxwidgets.org/"
depends=('gtk+2')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/downld2.htm|grep stable|sed -n 's/ *\([0-9\.]*\).*/\1/; 1 p'"
source=(http://dl.sourceforge.net/sourceforge/wxwindows/wxGTK-$pkgver.tar.bz2)
sha1sums=('7c2dfe27a56aa99b4ea557a436bf84a13a579a9d')

subpkgs=('wxgtk-devel' 'wxgtk-locale')
subdescs=('Include files for wxWidgets development' 'Locale files for wxWidgets')
subgroups=('devel-extra' 'locale-extra')
subarchs=('i686 x86_64' 'i686 x86_64')

build()
{
	Fcd wxGTK-$pkgver
	Fbuild --disable-unicode --with-sdl --with-gnomeprint --with-opengl \
	    --enable-mediactrl --enable-wxprintfv --enable-controls --enable-tabdialog \
	    --enable-iff
	cd contrib/src
	Fbuild
	Frm /usr/bin/wx-config
	Fln /usr/lib/wx/config/gtk2-ansi-release-2.6 /usr/bin/wx-config
	
	Fsplit wxgtk-devel usr/include/wx-2.6
	Fsplit wxgtk-devel usr/share/aclocal
	Fsplit wxgtk-devel usr/share/bakefile
	
	Fsplit wxgtk-locale usr/share/locale
	
	Frm /usr/include
}

# optimalization ok
