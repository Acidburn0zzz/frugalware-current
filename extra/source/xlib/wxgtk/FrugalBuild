pkgname=wxgtk
pkgver=2.6.3
pkgrel=6
pkgdesc="GTK+ implementation of wxWidgets API for GUI'"
url="http://www.wxwidgets.org/"
depends=('gtk+2')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/downld2.htm|grep stable|sed -n 's/ *\([0-9\.]*\).*/\1/; 1 p'"
source=(http://dl.sourceforge.net/sourceforge/wxwindows/wxGTK-$pkgver.tar.bz2)
sha1sums=('7c2dfe27a56aa99b4ea557a436bf84a13a579a9d')

subpkgs=('wxgtk-locale')
subdescs=('Locale files for wxWidgets')
subgroups=('locale-extra')
subdepends=('wxgtk')
subarchs=('i686 x86_64')

build()
{
	Fcd wxGTK-$pkgver
	Fbuild --with-gnomeprint \
		--disable-unicode \
		--with-opengl \
		--enable-geometry \
		--enable-sound --with-sdl \
		--enable-mediactrl \
		--enable-display
	cd contrib/src
	Fbuild
	Frm /usr/bin/wx-config
	Fln /usr/lib/wx/config/gtk2-ansi-release-2.6 /usr/bin/wx-config
	
	Fsplit wxgtk-locale usr/share/locale
	
	Frm /usr/include
}

# optimalization ok

# optimization OK
