# Compiling Time: ~1 hour on factory.frugalware.org
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=wxgtk
pkgver=2.6.2
pkgrel=3
pkgdesc="GTK+ implementation of wxWindows API for GUI'"
url="http://www.wxwidgets.org/"
depends=('gtk+2')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/downld2.htm|grep stable|sed -n 's/ *\([0-9\.]*\).*/\1/; 1 p'"
source=(http://dl.sourceforge.net/sourceforge/wxwindows/wxGTK-$pkgver.tar.gz)
sha1sums=('58ec01d0e49a3157f128fe4d285ef2763ee9998d')

build()
{
	Fcd wxGTK-$pkgver
	Fbuild --with-gtk --enable-gui
	Frm /usr/bin/wx-config
	Fln /usr/lib/wx/config/gtk2-ansi-release-2.6 /usr/bin/wx-config
}

# optimalization ok
