# Compiling Time: ~1 hour on factory.frugalware.org
# Maintainer: Miklos Nemeth <desco@frugalware.org>

rcver=rc1
realver=2.6.3
pkgname=wxgtk
pkgver=2.6.3rc1
pkgrel=1
pkgdesc="GTK+ implementation of wxWindows API for GUI'"
url="http://www.wxwidgets.org/"
depends=('gtk+2')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/downld2.htm|grep stable|sed -n 's/ *\([0-9\.]*\).*/\1/; 1 p'"
source=(http://dl.sourceforge.net/sourceforge/wxwindows/wxWidgets-$realver-$rcver.tar.bz2)
sha1sums=('fa3ddac8d5a3adfd404ddb184f71b737080c5f91')

build()
{
	Fcd wxWidgets-$realver
	Fbuild
	cd contrib/src
	Fbuild
	Frm /usr/bin/wx-config
	Fln /usr/lib/wx/config/gtk2-ansi-release-2.6 /usr/bin/wx-config
}

# optimalization ok
