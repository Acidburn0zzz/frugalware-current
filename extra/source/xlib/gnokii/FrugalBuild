pkgname=gnokii
pkgver=0.6.7
pkgrel=2
pkgdesc="Tools and user space driver for use with mobile phones"
url="http://www.gnokii.org/"
backup=(etc/gnokiirc)
depends=('gtk+' 'perl' 'bluez-libs')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep 'Current.*version' | tr -d [[:blank:][:alpha:]:]"
source=(http://www.gnokii.org/download/$pkgname/$pkgname-$pkgver.tar.bz2 gnokii-0.6.7-gnokiirc.patch)
md5sums=('c80d68549c86f287f24c2bee0e929ded' 'd160ec109cfc27ec924169fa18a3c614')

build()
{
	Fbuild || return 1
	Ffilerel Docs/sample/gnokiirc /etc/gnokii/gnokiirc
}

