pkgname=gtkglext
pkgver=1.2.0
pkgrel=2
pkgdesc="GL extensions for Gtk+ 2.0"
url="http://gtkglext.sourceforge.net/"
depends=('mesa' 'freeglut' 'libx11' 'gtk+2')
makedepends=('intltool' 'gtk-doc')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/gtkglext/?sort_by=date&sort=desc'|grep gtkglext-[0-9\.]*.tar.bz2|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/gtkglext/$pkgname-$pkgver.tar.bz2 \
	01_gdk-linking.patch)
sha1sums=('d84c9472af3438fbce84189613e5370b97d9d1e7' \
	  'c4b743027a89bfd56dd537020fb18a6faaa89791')

# NOTE: if you using any closed source drivers (nvidia or ati) then you MUST build this in
#	chroot !!!

build() {
	Fbuild --enable-gtk-doc
}

# optimalization OK
