pkgname=glew
pkgver=1.3.4
pkgrel=1
pkgdesc="GLEW is a cross-platform C/C++ extension loading library"
url="http://glew.sourceforge.net"
depends=('mesa')
groups=('xlib-extra')
archs=('i686')
Finclude sourceforge
source=(http://mesh.dl.sourceforge.net/$pkgname/$pkgname-$pkgver-src.tgz)
sha1sums=('d70fb9fc07b99ec87a192818f73fc31b42c0811b')

build() {
	Fcd $pkgname

	# Fix makefile
	Fsed 'CFLAGS = $(OPT) $(WARN) $(INCLUDE) $(CFLAGS.EXTRA)' \
	'CFLAGS = -march=i686 -pipe $(OPT) $(WARN) $(INCLUDE) $(CFLAGS.EXTRA)' Makefile

	Fmake
	make GLEW_DEST=$Fdestdir/usr install || return 1
}

# optimization OK
