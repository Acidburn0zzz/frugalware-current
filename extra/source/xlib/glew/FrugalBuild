pkgname=glew
pkgver=1.3.4
pkgrel=1
pkgdesc="GLEW is a cross-platform C/C++ extension loading library"
depends=('mesa')
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext="-src.tgz"
Finclude sourceforge
sha1sums=('d70fb9fc07b99ec87a192818f73fc31b42c0811b')

build()
{
	Fcd $pkgname
	# Use $CFLAGS pls. Such a CFLAGS += just means $CFLAGS + this_flags
	Fsed 'CFLAGS = $(OPT) $(WARN) $(INCLUDE) $(CFLAGS.EXTRA)' \
	'CFLAGS += $(WARN) $(INCLUDE) $(CFLAGS.EXTRA)' Makefile

	Fmake
	make GLEW_DEST=$Fdestdir/usr install || return 1
}

# optimization OK
