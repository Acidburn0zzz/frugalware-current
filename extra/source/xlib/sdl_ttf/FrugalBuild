pkgname=sdl_ttf
pkgver=2.0.7
pkgrel=1
pkgdesc="SDL_ttf is a TrueType font rendering library."
url="http://www.libsdl.org/projects/SDL_ttf"
depends=('sdl' 'freetype2' 'mesa')
groups=('xlib-extra')
archs=('i686')
up2date="lynx -dump $url/release/?sort=modified|grep -m1 '.tar.gz'|sed 's/.*].*-\(.*\).pkg.tar.gz  .*/\1/'"
source=(http://www.libsdl.org/projects/SDL_ttf/release/SDL_ttf-$pkgver.tar.gz)
sha1sums=('b0dd7646be46869279293bf384cb4b9a0f8c5dab')

build()
{
	Fcd SDL_ttf-$pkgver
	Fbuild --with-gnu-ld --with-x
}


# optimalization OK
