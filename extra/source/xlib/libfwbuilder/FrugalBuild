pkgname=libfwbuilder
pkgver=2.0.12
pkgrel=1
pkgdesc="Firewall Builder firewall configuration system - Core library"
url="http://www.fwbuilder.org"
depends=('qt' 'libxml2' 'libxslt' 'openssl')
groups=('xlib-extra')
archs=('i686' 'x86_64')
source=(http://heanet.dl.sourceforge.net/sourceforge/fwbuilder/$pkgname-$pkgver.tar.gz)
up2date="lynx -dump http://www.fwbuilder.org/archives/cat_release_notes.html | grep -m1 'Version' | sed 's/Version //g'"
sha1sums=('a287de04e81a4ee480d34e8f209718eb63da457a')

build() {
	Fmake
	make DDIR=$Fdestdir install
}

# optimization OK
