pkgname=cegui
pkgver=0.4.1
pkgrel=1
pkgdesc="Crazy Eddie's GUI System is a free library providing windowing and widgets for graphics APIs/engines"
url="http://www.cegui.org.uk/"
depends=('mesa' 'xerces-c' 'freetype2')
groups=('xlib-extra')
archs=('i686')
up2date="lynx -dump $url/wiki/index.php/Downloads | grep -m1 stable | sed 's/.*s \(.*\).:.*/\1/'"
source=(http://heanet.dl.sourceforge.net/crayzedsgui/cegui_mk2-source-$pkgver.tar.bz2 \
	$pkgname-$pkgver-gcc-41.patch0)
sha1sums=('1c4805b9703c19d49f62d54283bff20a08b84b89' '721e3e18e81339def5c914e6e92c53574dcda3ce')

build() {
	cd $Fsrcdir/cegui_mk2
	Fbuild --without-devil
}

# optimization OK
