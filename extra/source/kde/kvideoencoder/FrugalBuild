pkgname=kvideoencoder
origname=KVideoEncoder
pkgver=0.07
pkgrel=1
pkgdesc="KVideoEncoder is a GUI for the mencoder."
url="http://www.kde-apps.org/content/show.php?content=31385"
depends=('kdelibs>=3.5.3')
rodepends=('mplayer' 'lsdvd')
groups=('kde-extra')
archs=('i686')
up2date="lynx --dump http://www.kde-apps.org/content/show.php?content=31385|grep -m 1 'Version:'|sed 's/.*:\ \ //'"
source=(http://nchc.dl.sourceforge.net/sourceforge/$pkgname/$origname-$pkgver.tar.bz2 makefile.patch $pkgname.png)
license="GPL"
Finclude kdeapps
sha1sums=('a21a146c8f311d809ac01a4172ed9567df034b81' \
          'd93584b25415f1d4c47b8975742692de8939e3e3' \
          '27d20c4324c1f7f6ccec15c3829fee41cdee6ac5')

build()
{
	Fcd $origname-$pkgver
	Fconf
	Fpatchall
	make || return 1
	Fmkdir /etc
	Fmakeinstall
	Ffilerel ../$pkgname.png /usr/share/icons/hicolor/32x32/apps/$pkgname.png
	echo "Icon=kvideoencoder" >> $Fdestdir/usr/share/applications/kvideoencoder.desktop
}

# optimization OK
