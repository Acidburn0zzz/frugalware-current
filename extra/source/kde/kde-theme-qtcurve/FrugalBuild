# Last modified: Thu, 15 Jun 2006 15:14:37 +0200
# Compiling time: ~0.39 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=kde-theme-qtcurve
origver=QtCurve
pkgver=0.37
pkgrel=1
pkgdesc="KDE QtCurve Theme"
url="http://www.kde-look.org/content/show.php?content=40492"
depends=('kdelibs>=3.5.3')
makedepends=('gtk+2')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx --dump http://www.kde-look.org/content/show.php?content=40492|grep -m 1 Version|sed 's/.*:\ \ //'"
source=(http://www.cpdrummond.freeuk.com/$origver-$pkgver.tar.gz)
sha1sums=('3b98329ed8166ab830b40aaf5d7ddbd58b211ad1')

subpkgs=('qtcurve-gtk')
subdescs=('GTK QtCurve Theme')
subdepends=('libstdc++ gtk+2')
subgroups=('gnome-extra')
subarchs=('i686 x86_64')

build()
{
   Fcd $origver-$pkgver
   Fbuild --disable-debug --without-debug \
   	  --disable-dependency-tracking \
   	  --enable-kde-event-filter \
   	  --disable-final DO_NOT_COMPILE="gtk"
   Fsplit qtcurve-gtk usr/lib/gtk*
   Fsplit qtcurve-gtk usr/share/themes/QtCurve
}

# optimization OK
