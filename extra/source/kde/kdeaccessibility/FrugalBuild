pkgname=kdeaccessibility
pkgver=3.5.3
pkgrel=1
pkgdesc="KDE accessibility programs"
groups=('kde-extra' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.3' 'akode' 'festival' 'libxtst')
[ "$CARCH" != "x86_64" ] && depends=(${depends[@]} 'mbrola')
[ "$CARCH" != "x86_64" ] && makedepends=(${makedepends[@]} 'txt2pho-hu')
options=('nodocs')
Finclude kde
sha1sums=('267c280558780c198d6c429be7e157cb246f2709')

Fconfopts="$Fconfopts \
           --enable-new-ldflags \
           --with-akode	\
           --with-alsa \
           --with-arts"

