pkgname=kdeaccessibility
pkgver=3.5.1
pkgrel=1
pkgdesc="KDE accessibility programs"
groups=('kde-extra' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase>=3.5.1' 'akode' 'festival' 'libxtst')
[ "$CARCH" != "x86_64" ] && depends=(${depends[@]} 'mbrola')
[ "$CARCH" != "x86_64" ] && makedepends=(${makedepends[@]} 'txt2pho-hu')
options=('nodocs')
sha1sums=('b38503976360771d1a9d58abeb2c309ca539b551')
Finclude kde

Fconfopts="$Fconfopts \
           --enable-new-ldflags \
           --with-akode	\
           --with-alsa \
           --with-arts"
                   


