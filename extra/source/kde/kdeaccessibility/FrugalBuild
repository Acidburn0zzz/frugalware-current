# Last Modified: Tue, 27 Dec 2005 22:14:19 +0100
# Compiling Time: 1.10 SBU
# Maintainer: crazy <malagarax@gmx.net>

pkgname=kdeaccessibility
pkgver=3.5.0
pkgrel=1
kdever=3.5
pkgdesc="KDE accessibility programs"
pkgurl="ftp://ftp.solnet.ch/mirror/KDE/stable/$kdever/src"
url="http://www.kde.org"
groups=('kde-extra' 'kde-core')
archs=('i686' 'x86_64')
depends=('kdebase=3.5.0' 'akode' 'festival')
[ "$CARCH" != "x86_64" ] && depends=(${depends[@]} 'mbrola')
makedepends=('gstreamer' 'gst-plugins')
[ "$CARCH" != "x86_64" ] && makedepends=(${makedepends[@]} 'txt2pho-hu')
up2date=$pkgver
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('40f7b4493bc4e07dcd74d58df41d775ad0c2ddee')

build() 
{
           Fbuild CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                   --disable-debug \
                   --disable-dependency-tracking \
                   --enable-new-ldflags \
                   --with-gnu-ld \
                   --with-akode	\
                   --with-alsa \
                   --with-arts \
                   --with-gstreamer \
                   DO_NOT_COMPILE="doc"
                   
}

# vim: ft=sh

# optimalization OK
