# Last Modified: Sun, 30 Apr 2006 17:22:55 +0200
# Compiling Time: 0.43 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=bscommander
pkgver=2.20
pkgrel=1
pkgdesc="Two panels file manager with FTP support."
url="http://www.beesoft.org/bsc.html"
depends=('qt')
groups=('kde-extra')
archs=('i686')
options=('scriptlet')
up2date="lynx --dump http://www.kde-apps.org/content/show.php?content=37435|grep -m 1 'Version:'|sed 's/.*:\ \ //'"
source=(http://www.beesoft.org/download/bsc_${pkgver}_src.tar.gz)
sha1sums=('71777222ec231aa4663bc46caf51590121843c9b')

build()
{
	Fcd bsc
	qmake bsc.pro || Fdie
	Fmake
	Finstallrel 0755 /usr/bin/bsc
	Ffilerel BeesoftCommander.png /usr/share/bsc/BeesoftCommander.png
	Ffilerel {bsc_pl.qm,bsc_de.qm,bsc_ru.qm} /usr/share/bsc/lang/
	Fdesktop
	Fsed 'Exec=' 'Exec=bsc' $Fdestdir/usr/share/applications/bscommander.desktop
	Fsed 'Icon=' 'Icon=/usr/share/bsc/BeesoftCommander.png' \
		$Fdestdir/usr/share/applications/bscommander.desktop
}

# optimization OK
