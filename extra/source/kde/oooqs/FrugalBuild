pkgname=oooqs
pkgver=2.0.3
pkgrel=1
pkgdesc="OpenOffice.org Quickstarter, runs in the KDE SystemTray"
url="http://segfaultskde.berlios.de/"
depends=('openoffice.org' 'kdelibs')
groups=('kde-extra')
archs=('i686')
up2date="lynx -dump $url/index.php?content=oooqs|grep gz$|sed 's/.*-\(.*\)\.t.*/\1/'"
source=(http://download.berlios.de/segfaultskde/$pkgname-$pkgver.tar.gz \
	${pkgname}rc)
sha1sums=('9650ce6dbacdefed4d8eca8e44058e366d97e96c' \
          '1245ac783b127525ee71f2fce0d1bb5730a67d3f')
build()
{
	Fbuild || return 1
	Ffile /usr/share/config/oooqsrc
}

