# Last modified: Tue, 28 Jun 2005 15:24:16 +0200
# Compiling time: ~1 minutes
# Maintainer: Janny <janny@vnet.hu>

pkgname=kqemu
pkgver=0.1b
pkgrel=1
pkgdesc="KDE GUI for Qemu"
url="http://kqemu.sourceforge.net"
depends=('qemu' 'kdewebdev')
groups=('kde-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=111306|grep $pkgname-[0-9\.]*\b.tar.bz2|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/kqemu/$pkgname-$pkgver.tar.bz2 \
	$pkgname.desktop)
md5sums=('98a241cc1a8ada8b21c3de9bae329941' 'afb644dc1686518d5cca9aeb083ac52d')
license="GPL"

build()
{
    # install kqemu files
    Fcd
    Ffilerel /usr/lib/$pkgname/$pkgname-$pkgver.kmdr
    Fsed ' kqemu' ' /usr/lib/kqemu/kqemu' $pkgname	
    Fexerel /usr/bin/$pkgname
        
    # install desktop icon
    Ffile /usr/share/applications/$pkgname.desktop
}

# optimalization ok - noarch

# vim: ft=sh
