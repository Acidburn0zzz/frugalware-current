# Compiling time: 0.00 SBU
# Maintainer: Janny <janny@vnet.hu>

pkgname=kqemu
pkgver=0.3Alpha
pkgrel=1
pkgdesc="KDE GUI for Qemu"
url="http://kqemu.sourceforge.net"
depends=('qemu' 'kdewebdev')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=111306|grep $pkgname-[0-9\.]|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/kqemu/$pkgname-$pkgver.tgz $pkgname ksnapshot.diff)
license="GPL"
sha1sums=('45df3b10ea346a245d8a896c201f5a42492f9d9a' \
	  'fef593a8dbd7459be09b6be1d3f67947d6b142e1' \
	  '95176d1de5f187e8b114f31c9fb96877d96e2750')

build()
{
    cd $Fsrcdir
    patch -p0 <ksnapshot.diff || Fdie
    Ffile usr/lib/$pkgname/$pkgname.kmdr
    Fexe usr/bin/$pkgname
    Fdesktop "$pkgname" "blockdevice.png" "Qt;KDE;System;"
}
