pkgname=kiso
pkgver=0.8.2
pkgextraver=c
pkgrel=3
pkgdesc="To make creating, extracting and editing of ISO-Images as easy as possible."
url="http://kiso.sourceforge.net/"
depends=('libcdio' 'kdelibs')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download.php|grep tar.bz2|sed -n 's/.*-\(.*\)\.t.*/\1/; s/$pkgextraver//;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver$pkgextraver.tar.bz2)
# lynx -dump $url/download.php|grep tar.bz2|sed -n 's/.* \(.*\)/\1/; 1 p'
md5sums=('978d19df980f15076ee72ae42c74739c')

build()
{
	Fcd $pkgname-$pkgver
	Fbuild
}

