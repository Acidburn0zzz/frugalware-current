pkgname=kiso
pkgver=0.8.3
pkgextraver=
pkgrel=1
pkgdesc="To make creating, extracting and editing of ISO-Images as easy as possible."
url="http://kiso.sourceforge.net/"
depends=('libcdio' 'kdelibs')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump $url/download.php|grep tar.bz2|sed -n 's/.*-\(.*\)\.t.*/\1/; s/$pkgextraver//;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver$pkgextraver.tar.gz)
sha1sums=('52001f902a96d425a8164fe172a2bf80a5db7fda')

build()
{
	Fcd $pkgname-$pkgver
	Fbuild
}

