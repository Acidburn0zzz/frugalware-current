pkgname=noteedit
pkgver=2.8.0
pkgrel=1
pkgdesc="a free music score editor for Linux"
url="http://noteedit.berlios.de/"
depends=('kdelibs' 'tse3')
groups=('kde-extra')
archs=('i686')
up2date="lynx -dump 'http://noteedit.berlios.de/download.html/' | grep 'current stable version' | sed 's/.*version is \([0-9\.]\+\)\..*/\1/'"
source=(http://download.berlios.de/$pkgname/$pkgname-$pkgver.tar.gz gcc.patch nscaleedit.patch)
sha1sums=('0bd915fb017e813e485d2738a85d2faa0b345f66' \
          'd9c0b4b37326994c36c863131abc5bda930790af' \
	  'c352f1bcdfa1c9ad50a3494a38f8fe2582558b0a')

build()
{
	Fcd
	Fpatchall
	Fmake
# --without-libs
	Fmakeinstall
}

# optimalization OK
