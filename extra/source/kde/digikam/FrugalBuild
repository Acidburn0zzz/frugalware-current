pkgname=digikam
pkgver=0.8.2
pkgrel=1
pkgdesc="Digital photo management application for kde"
url="http://digikam.sourceforge.net"
depends=('libkexif' 'libkipi' 'libgphoto2' 'imlib2' 'qt' 'sqlite3')
makedepends=('doxygen')
groups=('kde-extra' 'kde-apps')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_sourceforge_prefix="$pkgname-"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('6305b1c485a3fe82257907410b256966bb012406')

build() {
	Fcd
	make -f Makefile.cvs || Fdie
	## kde and kde-apps bug
	for i in `find . -iname configure`
	 do
	    Fsed '-O2' '' $i
	 done
	Fbuild --disable-debug --with-gnu-ld --enable-gcc-hidden-visibility
	## is in kdelibs now 
	Frm usr/share/mimelnk/image/x-raw.desktop
}

# optimalization OK
