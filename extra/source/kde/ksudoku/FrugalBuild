# Compiling time: 0.14 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=ksudoku
pkgver=0.3
pkgrel=1
pkgdesc="Sudoku Puzzle Generator and Solver for KDE."
url="http://ksudoku.sourceforge.net"
license="GPL2"
depends=('qt' 'kdelibs' 'glut')
archs=('i686')
groups=('kde-extra')
up2date="lynx -dump http://prdownloads.sourceforge.net/ksudoku/|grep ksudoku-[0-9\.]*\.tar.gz$|tail -n 1|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://prdownloads.sourceforge.net/sourceforge/ksudoku/$pkgname-$pkgver.tar.gz ksudoku-0.3.diff)
sha1sums=('fd2260a9220b92c6a3fa472bd70fb185942a29c4' '3e613557d8e4aa3c2616920dd6535851562363a2')
[ "$CARCH" == "x86_64" ] && suffix="--enable-libsuffix=64"

build()
{
    Fbuild --disable-final \
    --disable-dependency-tracking \
    --enable-dnotify \
    --with-alsa --disable-debug \
    --enable-sendfile \
    --enable-ltdl-install \
    --disable-warnings \
    --enable-mitshm \
    --with-libart \
    --with-lua-includes=/usr/include \
    --with-lua-libraries=/usr/lib \
    --with-acl \
    --enable-gcc-hidden-visibility $suffix
}

# optimalization ok
