pkgname=kerry
pkgver=0.09
pkgrel=1
pkgdesc="Kerry Beagle is a KDE frontend for the Beagle desktop search daemon."
url="http://en.opensuse.org/Kerry"
depends=('kdebase>=3.5.1-7' 'beagle>=0.2.3-2')
up2date="lynx -dump $url|grep 'tarball of'|sed 's/.*version \(.*\) .*wh.*/\1/'"
source=(http://developer.kde.org/~binner/$pkgname/$pkgname-$pkgver.tar.bz2 font_size-8-is-bullshit.patch)
groups=('kde-extra')
archs=('i686')
sha1sums=('13bd3eb86ea2c10e4418b8a2ab0abe0f0106b6ce' \
          '253c28fbb8a273db155d59edcd29340221c3c3c7')

build ()
{

     Fcd $pkgname
     make -f admin/Makefile.common cvs || return 1
     Fbuild --disable-dependency-tracking \
            --disable-debug --without-debug --with-gnu-ld
}

# optimalization OK
