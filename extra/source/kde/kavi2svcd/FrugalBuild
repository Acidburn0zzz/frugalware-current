pkgname=kavi2svcd
pkgver=0.8.7
pkgrel=1
pkgdesc="A grahphical user interface for transcode, vcdimager and cdrdao."
url="http://www.cornelinux.de/web/linux/kavi2svcd/"
depends=('kdelibs' 'vcdimager' 'transcode' 'cdrdao')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=73070&package_id=73062' | grep 'http.*\.tar\.gz' | sed -n 's/.*-\([0-9\.]\+\)\..*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('6ff38574c56cc9c0f51737f0694bbe278729e17c')
options=('scriptlet')

build()
{
	Fcd $pkgname
	Fmake
	make DESTDIR=$Fdestdir install || return 1
}

