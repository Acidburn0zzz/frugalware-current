pkgname=knetdockapp
pkgver=0.67.3
pkgrel=1
pkgdesc="A small application that docks in the systray and monitors the activity of the selected network interface."
url="http://www.kde-apps.org/content/show.php?content=29398"
depends=('kdebase')
up2date="lynx --dump http://www.kde-apps.org/content/show.php?content=29398|grep -m 1 Version|sed 's/.*:\ \ //'"
source=("http://www.kde-apps.org/content/files/29398-$pkgname-$pkgver.tar.bz2")
license="GPL"
groups=('kde-extra')
archs=('i686')
sha1sums=('cb32eba8682c1bc26a39e5ea592e9e07ca296775')

build ()
{

     Fcd
     make -f Makefile.cvs
     Fbuild --disable-dependency-tracking \
            --disable-debug --without-debug --with-gnu-ld
}

# optimalization OK

