pkgname=knetdockapp
pkgver=0.67.5.3
pkgrel=1
pkgdesc="A small application that docks in the systray and monitors the activity of the selected network interface."
url="http://www.kde-apps.org/content/show.php?content=29398"
depends=('kdebase')
up2date="lynx --dump http://www.kde-apps.org/content/show.php?content=29398|grep -m 1 'Version:'|sed 's/.*:\ \ //'"
source=(http://www.kde-apps.org/content/files/29398-$pkgname-$pkgver.tar.gz autoconf-2.6x)
license="GPL"
groups=('kde-extra')
archs=('i686' 'x86_64')
Finclude kdeapps
sha1sums=('8704ce2b724074ac45b7dfca075691e423e2fffa' \
          'c218b56f249d794a07b02220acc1e63550990f5d')

build()
{
	Fcd
	Fpatch autoconf-2.6x
	make -f Makefile.cvs || return 1
	Fbuild --disable-debug --without-debug --with-gnu-ld
}

# optimization OK
