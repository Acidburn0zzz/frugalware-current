pkgname=kdesuservicemenus
pkgver=1.0.0
pkgrel=1
pkgdesc="KDE root service menu."
rodepends=('kdebase')
groups=('kde-extra')
archs=('i686' 'x86_64')
_F_kdeapps_id=11227
Finclude kdeapps
source=("http://www.kde-apps.org/content/files/11227-SU - Service Menus.tar.gz")
sha1sums=('7c092ee02c382cd1fecaf68453acbe4ae7e63728')
license="GPL"

build()
{
	sed -i 's/\(Name\[es\]\)/\n\1/' run*
	Ffilerel "*.desktop" /usr/share/apps/konqueror/servicemenus/
}

# optimization OK - noarch
