# Last Modified: Wed, 06 Jul 2005 17:40:34 +0200
# Compiling Time: 0.43 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=kiax
pkgver=0.8.4
pkgrel=1
pkgdesc="QT based IAX (Inter Asterisk eXchange) client"
url="http://kiax.sourceforge.net/"
depends=('qt')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/kiax/?sort_by=date&sort=desc'|grep tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2 $pkgname-$pkgver-wrapper.patch0 README.Frugalware)
sha1sums=('8889ad5051b24e4508db404b73431b5f3fcef88f' \
          'f886f72349c0b448cb726503f3ade997f233ff59' \
          'f03cda2ee2805131db5dc4f92488ce8b5cba32b5')

build()
{
	Fsed '\($(DEST_PATH)\)' '${INSTALL_ROOT}\1' bin/Makefile
	Fsed '\(#include <qtimer.h>\)' "\1\n#include <stdlib.h>" \
		src/iaxwrapper.h
	Fmkdir /usr/bin
	Fpatchall
	Fmake || return 1
	Fmakeinstall INSTALL_ROOT=$Fdestdir
	Ffilerel /usr/share/applications/$pkgname.desktop
	Fdoc README.Frugalware
}

# optimalization OK
