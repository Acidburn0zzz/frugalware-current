pkgname=baghira
pkgver=0.7
pkgrel=4
pkgdesc="Mac OS theme for KDE"
url="http://baghira.sourceforge.net/"
depends=('kdebase')
groups=('kde-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump http://prdownloads.sourceforge.net/baghira/ |grep baghira-[^-]*tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://dl.sourceforge.net/sourceforge/baghira/baghira-$pkgver.tar.bz2 gcc4.1.x.patch) 
sha1sums=('958c48a0be2ad6cecf86714da68354a593cc740a' \
          '15c5115d6cfa29e9ec64a9472f12988a7c5dbb4a')

build()
{
	Fcd $pkgname-release
	Fbuild --disable-debug --without-debug --with-gnu-ld
}

# optimalization OK
