# Last Modified: Wed, 06 Jul 2005 17:08:48 +0200
# Compiling Time: ~10 minutes
# Maintainer: Zoltan Kiss <djsmiley@inflame.hu>

pkgname=baghira
pkgver=0.6e
pkgrel=2
pkgdesc="Mac OS theme for KDE"
depends=('kdebase')
makedepends=('automake' 'autoconf' 'kdebase')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/projects/baghira|grep -1 Version|sed -n -e 's/.*]\([0-9\.]\+[a-z]*\) [A-Z].*/\1/' -e '3 p'"
source=(http://dl.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('987b598c00ba09dad8ff62ea405f9873')

build()
{
	Fbuild --with-qt-libraries=/usr/lib/qt/lib/ --with-qt=/usr/lib/qt/ \
		--with-qt-includes=/usr/lib/qt/include/ || return 1
}

# vim: ft=sh

# optimalization OK
