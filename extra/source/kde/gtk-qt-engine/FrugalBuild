# Last Modified: Mon, 14 Feb 2005 23:36:27 +0000
# Compiling Time: ~10 minutes
# Maintainer: Zoltan Kiss <djsmiley@inflame.hu>

pkgname=gtk-qt-engine
pkgver=0.6
pkgrel=1
pkgdesc="Qt engine for GTK"
depends=('x' 'kdebase' 'libbonoboui')
groups=('kde-extra')
archs=('i686')
up2date=0.6
source=(http://www.freedesktop.org/~davidsansome/$pkgname-$pkgver.tar.bz2)
md5sums=('9c02c95a6e8d304b1f2801429759e1c0')

build() {
	cd $startdir/src/$pkgname-$pkgver
	
	./configure --with-qt-libraries=/usr/lib/qt/lib/ --with-qt=/usr/lib/qt/ --with-qt-includes=/usr/lib/qt/include/
	
	make || return 1

	mkdir -p $startdir/pkg/opt/
	make DESTDIR=$startdir/pkg/ install
}

# vim: ft=sh
