# Last modified: Fri, 12 Aug 2005 14:52:44 +0200
# Compiling time: ~4 minutes
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=kdissert
pkgver=1.0.4
pkgrel=1
pkgdesc="A mindmapping-like tool to help students to produce complicated documents very quickly and efficiently"
url="http://freehackers.org/~tnagy/kdissert/"
depends=('qt' 'kdelibs')
makedepends=('python')
groups=('kde-extra')
archs=('i686')
source=(http://freehackers.org/~tnagy/kdissert/$pkgname-$pkgver.tar.bz2)
up2date='wget -q -O - "$url" | grep "kdissert-.*.tar.bz2" | head -n 1 | sed "s/.*kdissert-\(.*\).tar.bz2.*/\1/"'
sha1sums=('0ed63f1edb16e1f4af4847ebac25de1e16416111')

build() {
	Fcd
	./runme.sh || return 1
	scons configure prefix=/usr/ || return 1
	scons install prefix=/usr DESTDIR=$Fdestdir || return 1
}

# optimalization OK

