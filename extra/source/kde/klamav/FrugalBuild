pkgname=klamav
pkgver=0.35
pkgrel=1
pkgdesc="KlamAV brings ClamAV functionality to the KDE desktop user."
url="http://klamav.sf.net"
license="GPL"
depends=('libxi' 'libsm' 'clamav' 'libxinerama' 'qt' 'libxcursor' 'libxft' 'libpng' 'kdelibs' 'libxrandr')
archs=('i686' 'x86_64')
groups=('kde-extra')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=102171&package_id=160304&release_id=386466' | grep klamav | sed -ne 's/.*-\(.*\)-source\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/klamav/$pkgname-$pkgver-source.tar.gz)
sha1sums=('9e7aa9d43a9191501d155b5787b0352813061db1')

build()
{
	Fcd $pkgname-$pkgver-source/$pkgname-$pkgver/
	Fbuild
}

