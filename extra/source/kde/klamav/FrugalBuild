pkgname=klamav
pkgver=0.35.1
pkgrel=1
pkgdesc="KlamAV brings ClamAV functionality to the KDE desktop user."
url="http://klamav.sf.net"
license="GPL"
depends=('kdelibs' 'libxxf86vm' 'clamav')
archs=('i686' 'x86_64')
groups=('kde-extra')
options=('scriptlet')
_F_sourceforge_prefix="KlamAV-"
Finclude sourceforge
## damn broken sf.net :/
source=(http://dl.sourceforge.net/sourceforge/klamav/$pkgname-$pkgver-source.tar.gz gcc41)
sha1sums=('6d8c2a44fd1962381a8af09aed5b86143daaeb6a' \
          '4f2b7b052855239a10186a4aea2c081a9a269a8b')
## NOTE: janny there is a "dazuko-2.1.1" source in this traball as well mabye you want add it as well ?
build()
{
	Fcd $pkgname-$pkgver-source
	Fpatch gcc41
	cd $pkgname-$pkgver
	Fbuild --disable-debug --without-debug
}

# optimalization ok
