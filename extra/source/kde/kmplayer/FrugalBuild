# Last modified: Mon, 06 Mar 2006 19:37:29 +0100
# Compiling time: 0.90 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=kmplayer
pkgver=0.9.1b
pkgrel=2
pkgdesc="The KMPlayer KPart plugin for Konqueror mimics QuickTime, MS Media Player and RealPlayer plugin browser plugins."
url="http://kmplayer.kde.org"
license="GPL"
depends=('mplayer' 'gst-plugins' 'libstdc++' 'libxml2' 'xine-lib' 'popt' 'kdelibs')
archs=('i686' 'x86_64')
groups=('kde-extra')
## not sure this is the best solution =)
up2date="lynx -dump $url/pkgs/?D=D|grep km |grep -m1 .tar|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
#up2date="lynx -dump $url/pkgs/|grep $pkgname-[0-9\.]*\.tar.bz2|tail -n 1|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/pkgs/$pkgname-$pkgver.tar.bz2)
sha1sums=('38621ea9252ee8b0f4f90b0709b0314bd790bdc8')

build()
{
	Fbuild --enable-profile --enable-final \
		--disable-debug --without-debug --with-gnu-ld
	## now in kdelibs
	Frm /usr/share/mimelnk/application/x-mplayer2.desktop
}

# optimalization OK
