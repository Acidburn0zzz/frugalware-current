pkgname=ksudo
pkgver=0.2
pkgrel=3
pkgdesc="GUI with which you can quickly and easily create a config file for sudo."
url="http://ksudo.sourceforge.net/"
license="GPL2"
install=$pkgname.install
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=59198&package_id=55217' | grep -m 1 -o 'ksudo-\([0-9].\+\)' | cut -d \  -f 1 | cut -d - -f 2"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('7afebd0932fd110f04fbce644028c9ec')
groups=('kde-extra')
archs=('i686')
depends=('qt' 'kdebase')
makedepends=('gcc=3.4.3')

build()
{
	Fsed "^Exec=ksudo.\+" "Exec=kdesu ksudo /etc/sudoers" ksudo/ksudo.desktop
	Fbuild
	Fmv /usr/share/applnk/Applications /usr/share/applnk/System
}

# vim: ft=sh

