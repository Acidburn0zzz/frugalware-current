# Maintainer: crazy <crazy@frugalware.org>

pkgname=kwin-decor-suse2
pkgver=0.3.5
pkgrel=1
pkgdesc="SuSe kwin decoration for KDE."
url="http://www.gerdfleischer.de/kwin-decor-suse2/"
depends=('kdebase>=3.5.3')
groups=('kde-extra')
archs=('i686')
up2date="lynx --dump http://www.kde-look.org/content/show.php?content=23579|grep -m 1 'Version:'|sed 's/.*:\ \ //'"
source=($url/$pkgname-$pkgver.tar.bz2)
Finclude kdeapps
sha1sums=('8f93929bfa048f727dcff278f33a448c86ce9ec8')

build()
{
	Fcd
	# need a frugalware one :S
	rm -f src/titlebar_decor.png
	mv extra/konqui-deco.png src/titlebar_decor.png
	Fbuild --disable-debug --without-debug \
		--enable-final
}

# optimization OK
