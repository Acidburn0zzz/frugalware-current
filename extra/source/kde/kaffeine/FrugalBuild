pkgname=kaffeine
pkgver=0.7.1
pkgrel=3
pkgdesc="Kaffeine is full featured Media Player for KDE3."
url="http://kaffeine.sourceforge.net/"
depends=('kdebase' 'xine-lib' 'popt' 'libxml2')
makedepends=('gst-plugins')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/index.php?page=download |grep stable |sed 's/.*: \(.*\)/\1/'"
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('ae91768ca9f2542ba9c287371109ef9095146270')

build()
{
        Fcd
        make -f admin/Makefile.common
	Fbuild --disable-debug --without-debug --with-gnu-ld
	Frm /usr/share/mimelnk/application/x-mplayer2.desktop
}
# vim: ft=sh

