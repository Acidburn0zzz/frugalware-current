pkgname=kaffeine
pkgver=0.7
pkgrel=1
pkgdesc="Kaffeine is full featured Media Player for KDE3."
url="http://kaffeine.sourceforge.net/"
depends=('kdebase' 'xine-lib' 'popt' 'libxml2' 'kdelibs')
makedepends=('gst-plugins')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/index.php?page=download |grep stable |sed 's/.*: \(.*\)/\1/'"
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('83fca6a69bcf000c745b540228fce1322335135a')

build()
{
	Fbuild --with-xinit-workaround
}

