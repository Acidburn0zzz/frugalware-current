# Last Modified: Fri, 01 Jul 2005 12:16:01 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=kaffeine
pkgver=0.6
pkgrel=1
pkgdesc="Kaffeine is full featured Media Player for KDE3."
url="http://kaffeine.sourceforge.net/"
# yes, it does not work with xfree86, hence the xorg instead of x
depends=('kdebase' 'xine-lib' 'xorg')
groups=('kde-extra')
archs=('i686')
up2date="lynx -dump $url/index.php?page=download |grep stable |sed 's/.*: \(.*\)/\1/'"
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('7412abf5f646a0fd62ac5ad3dba80ab2')

build()
{
	Fbuild --with-xorg || return 1
}

# vim: ft=sh

# optimalization OK
