pkgname=kile
pkgver=1.7.1
pkgrel=4
pkgdesc="A qt latex environment"
url="http://kile.sourceforge.net/"
groups=('kde-extra')
depends=('qt' 'kdelibs' 'tetex')
up2date=`lynx --dump http://kile.sourceforge.net/ | grep "Latest available"|sed -e 's/.*]\(.*\)./\1/'`
source=("http://belnet.dl.sourceforge.net/sourceforge/kile/$pkgname-1.7.1.tar.bz2" "$pkgname-$pkgver.diff")
md5sums=('940fba9dc62e2687856885dffccf6e80' '96fe9b14c93f795b5ec2cdc102862e78')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < $startdir/src/$pkgname-$pkgver.diff
	./configure
	make || return 1
	make prefix=$startdir/pkg/opt/kde install
}

