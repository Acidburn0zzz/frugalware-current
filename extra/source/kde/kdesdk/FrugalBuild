# Last Modified: Sat, 03 Dec 2005 19:48:25 +0100
# Compiling Time: 4.48 SBU
# Maintainer: crazy <malagarax@gmx.net>

pkgname=kdesdk
pkgver=3.5.0
pkgrel=1
kdever=3.5
pkgdesc="KDE Software Development Kit."
pkgurl="ftp://ftp.solnet.ch/mirror/KDE/stable/$kdever/src"
url="http://www.kde.org"
groups=('kde-extra' 'kde-core')
archs=('i686')
depends=('kdebase=3.5.0' 'db' 'subversion')
makedepends=('doxygen' 'cvs')
up2date=$pkgver
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
sha1sums=('aac8b23f75786f17229d6eee8d329cef38c8d6b5')


build() 
{

        
	Fbuild  CXXFLAGS="$CXXFLAGS -Wno-deprecated" \
                --disable-debug \
                --disable-dependency-tracking \
                --enable-new-ldflags \
                --with-subversion \
                --with-berkeley-db \
                --with-gnu-ld \
               DO_NOT_COMPILE="doc" 
           
}

# vim: ft=sh

# optimalization OK
