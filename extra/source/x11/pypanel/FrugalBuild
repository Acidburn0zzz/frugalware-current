pkgname=pypanel
pkgver=2.4
pkgrel=1
pkgdesc="PyPanel is a lightweight panel/taskbar written in Python and C."
url="http://pypanel.sourceforge.net/"
license="GPL2"
up2date="lynx -dump $url|grep 'released'|cut -d ' ' -f 5"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/PyPanel-$pkgver.tar.gz)
sha1sums=('10935d671bcfa04cec7c45785668fea5a4fbad1d')
groups=('x11-extra')
archs=('i686' 'x86_64')
depends=('python-xlib' 'imlib2')

build()
{
	pyver=`python -V 2>&1 | cut -d ' ' -f 2 | cut -d . -f 1,2`
	Fcd PyPanel-$pkgver
	Fbuild
	Frm /usr/lib/python$pyver/site-packages/pypanel/{COPYING,README}
}

# vim: ft=sh

# optimalization OK
