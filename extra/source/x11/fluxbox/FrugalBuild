pkgname=fluxbox
pkgver=0.9.13
pkgrel=1
pkgdesc="A lightweight wm, based on the code of blackbox"
url="http://www.fluxbox.org"
depends=('imlib2')
conflicts=('blackbox')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.fluxbox.org/version-0.9.php|grep tar.gz$|sed 's/.*x-\(.*\).t.*/\1/'"
source=(http://ovh.dl.sourceforge.net/sourceforge/fluxbox/$pkgname-$pkgver.tar.bz2 $pkgname.desktop xinitrc.$pkgname)
md5sums=('f9b7b3c3b8e1e9ce3449601b238d4fba' \
	'6cc33739c42accfd52e3b35f4a5a2ba6' \
	'ea915c1e833c7fab16b0c1d914bb5230')

build() {
        Fcd
	Fautoconfize
        Fmake --enable-imlib2 || return 1
        Fmakeinstall

	mkdir -p $Fdestdir/etc/X11/{xinit,sessions}
	install -D -m755 -o root -g root $Fsrcdir/xinitrc.$pkgname $Fdestdir/etc/X11/xinit/xinitrc.$pkgname
	cp $Fsrcdir/$pkgname.desktop $Fdestdir/etc/X11/sessions/
}

# optimalization OK

