pkgname=fluxbox
pkgver=0.9.12
pkgrel=3
pkgdesc="A lightweight wm, based on the code of blackbox"
url="http://www.fluxbox.org"
depends=('x' 'imlib2')
conflicts=('blackbox')
groups=('x11-extra')
up2date=`lynx -dump http://www.fluxbox.org/version-0.9.php|grep tar.gz$|sed 's/.*x-\(.*\).t.*/\1/'`
source=(http://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz $pkgname.desktop xinitrc.$pkgname)
md5sums=('e4e6821d9e7a4b3f64c0d8069dbff8b8' '6cc33739c42accfd52e3b35f4a5a2ba6'\
         'ea915c1e833c7fab16b0c1d914bb5230')

build() {
        cd $startdir/src/$pkgname-$pkgver
        ./configure --prefix=/usr --enable-imlib2
	
        make || return 1
        make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/etc/X11/{xinit,sessions}
	install -D -m755 -o root -g root $startdir/src/xinitrc.$pkgname $startdir/pkg/etc/X11/xinit/xinitrc.$pkgname
	cp $startdir/src/$pkgname.desktop $startdir/pkg/etc/X11/sessions/
}

# vim: ft=sh
