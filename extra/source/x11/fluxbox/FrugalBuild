pkgname=fluxbox
pkgver=0.9.15.1
pkgrel=1
pkgdesc="A lightweight wm, based on the code of blackbox"
url="http://www.fluxbox.org"
depends=('imlib2' 'libstdc++' 'libxpm')
rodepends=('xorg-server')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.fluxbox.org/version-0.9.php|grep tar.gz$|sed 's/.*x-\(.*\).t.*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/fluxbox/$pkgname-$pkgver.tar.bz2 \
        $pkgname.desktop xinitrc.$pkgname)
sha1sums=('94652432037203f1619ba8ed657339fb85b3c894' \
	'10a60edec5f8bcf0c4e1209074b3a5c7bf19388a' \
	'51351a641b785755dd4c2163b22fc4052553c75c')

build() {
        Fcd
	Fautoconfize
        Fbuild --enable-imlib2 --enable-nls
	Fexe /etc/X11/xinit/xinitrc.$pkgname
	Ffile /etc/X11/sessions/$pkgname.desktop
}

# optimalization OK

