pkgname=x-cursors-silver
pkgver=0.4
pkgrel=2
pkgdesc="Silver cursor theme for X"
url="http://www.kde-look.org/content/show.php?content=5533"
depends=('x')
groups=('x11-extra')
archs=('i686' 'x86_64')
replaces=('silver-xcursors-3d')
install=$pkgname.install
up2date="lynx -dump 'http://www.kde-look.org/content/show.php?content=5533'|grep Version |sed -e 's/.*\([0-9]..*\)/\1/'"
source=(http://www.kde-look.org/content/files/5533-Silver-XCursors-3D-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('c6093c8af520421c302d029e9deb53af' \
	'fd01edd5b837a517feffc833631aa46c')

build() {
	Fcd Silver-XCursors-3D-$pkgver
	Fmkdir usr/X11/lib/X11/icons
	mv Silver $startdir/pkg/usr/X11/lib/X11/icons/
}

# vim: ft=sh
