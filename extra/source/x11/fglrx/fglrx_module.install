post_install()
{
	[ `grep fglrx < /etc/rc.d/rc.modules|wc -l` == 0 ] && \
	echo '/sbin/modprobe fglrx' >> /etc/rc.d/rc.modules
	depmod -a
}

post_upgrade()
{
	post_install $1
}

pre_remove()
{
	[ ! `/sbin/lsmod|grep fglrx|wc -l` == 0 ] && /sbin/rmmod fglrx
	sed -i 's|/sbin/modprobe fglrx||g' /etc/rc.d/rc.modules
}

op=$1
shift
$op $*

