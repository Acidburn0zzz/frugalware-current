# Last modified: Sun, 03 Jul 2005 00:58:35 +0200
# Compiling time: ~6 minutes
# Maintainer: Shrift <shrift@frugalware.org>

pkgname=fglrx
pkgver=8.14.13
pkgrel=2
pkgdesc="Hardware Accelerated ATI driver for xorg"
url="http://www.ati.com/"
depends=('x' 'kernel-source' 'kernel-headers' 'gcc' 'make' 'rpm')
groups=('x11-extra')
archs=('i686')
install=$pkgname.install
up2date="lynx -dump http://ati.com/support/drivers/linux/radeon-linux.html|grep fglrx_6_8_0|sed -ne 's/.*fglrx_6_8_0-\(.*\)\-1.i386.rpm*/\1/;1 p'"
source=(http://www2.ati.com/drivers/linux/${pkgname}_6_8_0-$pkgver-1.i386.rpm \
	$pkgname-$pkgver-kernel2612.diff)
md5sums=('5187698cee2edf3dee89bc3eee5729c1' '7b2470383cae5fb2f44f938e57b724e9')

build()
{
	Ffile /tmp/${pkgname}_6_8_0-$pkgver-1.i386.rpm
	Ffile /tmp/$pkgname-$pkgver-kernel2612.diff
	chmod 1777 $Fdestdir/tmp
}

