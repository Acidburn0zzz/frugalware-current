# Last Modified: Sun, 05 Jun 2005 19:56:26 +0200
# Compiling Time: ~0.04 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=suxpanel
pkgver=0.4a
pkgrel=1
pkgdesc="SuxPanel is a complete rewrite of old 'MacOS Style Panel' project."
url="http://www.linuxmag.com.br/~leandro/suxpanel/"
license="GPL2"
up2date="lynx -dump $url | grep Latest | cut -d ' ' -f 6"
source=($url/$pkgname-$pkgver.tar.bz2 $pkgname)
md5sums=('83f47c6d355b6ee5cc9f2343e18d23ff' '40ff08b015b591e953b96f0680151f9e')
groups=('x11-extra')
archs=('i686')
depends=('libwnck')

build()
{
    Fcd
    Fmkdir /usr/bin
    Fsed "^CFLAGS = -Wall \$(GTK_CFLAGS) -O2 -g" "CFLAGS = \$(GTK_CFLAGS) $CFLAGS" Makefile.in
    Fbuild || return 1
    Fmv /usr/bin/suxpanel /usr/bin/suxpanel.orig
    Fexerel suxpanel-install.sh /usr/bin
    Fexe suxpanel /usr/bin
}

# optimalization ok - i686

# vim: ft=sh
