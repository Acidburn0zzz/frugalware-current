# Compiling Time: 0.05 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=suxpanel
pkgver=0.4a
pkgrel=2
pkgdesc="SuxPanel is a complete rewrite of old 'MacOS Style Panel' project."
url="http://www.gnomefiles.org/app.php?soft_id=84"
license="GPL2"
up2date="lynx -dump http://www.gnomefiles.org/app.php?soft_id=84|grep -m 1 version|grep -o '[0-9\.]\+[0-9a-z]\+'"
source=(ftp://ftp.frugalware.org/pub/frugalware/frugalware-current/extra/source/x11/$pkgname/$pkgname-$pkgver.tar.bz2 \
        $pkgname)
sha1sums=('a6f881503a4ee164da041be7a3438314b1a2bdc2' \
          'af3f800d19b120d39c9dca92e618a517e69abdc5')
groups=('x11-extra')
archs=('i686' 'x86_64')
depends=('libwnck')
[ "$CARCH" == "x86_64" ] && FPIC="-fPIC"

build()
{
    Fcd
    Fmkdir /usr/bin
    Fsed "^CFLAGS = -Wall \$(GTK_CFLAGS) -O2 -g" "CFLAGS = \$(GTK_CFLAGS) $CFLAGS $FPIC" Makefile.in
    Fbuild || return 1
    Fmv /usr/bin/suxpanel /usr/bin/suxpanel-bin
    Fexerel suxpanel-install.sh /usr/bin
    Fexe suxpanel /usr/bin
}

# optimalization ok - i686

# vim: ft=sh
