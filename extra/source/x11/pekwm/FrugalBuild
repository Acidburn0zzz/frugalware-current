# Last Modified: Thu, 09 Feb 2006 21:45:28 +0100
# Compiling Time: 0.04 SBU
# Maintainer: DNAku <DNAku@frugalware.org>

pkgname=pekwm
pkgver=0.1.4pre2
pkgrel=2
pkgdesc="The Pek Window Manager is a lightweight window manager"
url="http://pekwm.org"
depends=('libsm' 'libxft' 'libxpm')
groups=('x11-extra')
archs=('i686')
up2date="lynx -dump http://adresh.com/pekwm/docs.html|grep 'release'|sed 's/\[.*\]//g'|sed 's/release .//g'|sed 's/Pekwm //g'|sed 's/ //g'"
source=(http://pekwm.org/files/$pkgname-$pkgver.tar.gz xinitrc.$pkgname $pkgname.desktop)
sha1sums=('9281e7c9dbebf5da45c542e4c68726a3984fac6a' \
	'e5aef8221ea9b0a632d23661fc0920633630e08b' \
	'77a0bbe2ffd18920f791ee57a0aee76c439e99ee')

build() {
	Fbuild
	Fexe /etc/X11/xinit/xinitrc.$pkgname
	Ffile /etc/X11/sessions/$pkgname.desktop
}

# vim: ft=sh

# optimalization OK
