pkgname=mrxvt
pkgver=0.4.1
pkgrel=2
pkgdesc="lightweight and powerful multi-tabbed X terminal emulator"
url="http://materm.sourceforge.net/"
depends=('x' 'libjpeg')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://materm.sourceforge.net/download.html | grep 'prdownloads' | head -n 1 | cut -d '-' -f 2 | cut -d '.' -f 1-3"
source=(http://peterhost.dl.sourceforge.net/sourceforge/materm/$pkgname-$pkgver.tar.gz)
# could not find official md5sum, made it myself
md5sums=('bd41f496e11d2a318e2fa59aca056793')

build()
{
	Fmake --enable-everything --disable-debug \
		--disable-greek --disable-cjk --disable-thai --disable-utmp \
		--disable-wtmp --disable-lastlog --disable-utempter || return 1
	Fmakeinstall
}

# vim: ft=sh

# optimalization OK
