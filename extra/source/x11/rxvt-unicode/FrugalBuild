# Last Modified: Wed, 25 Jan 2006 11:25:51 +0100
# Compiling Time: ~0.18 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=rxvt-unicode
pkgver=7.2
pkgrel=1
pkgdesc="rxvt-unicode is a clone of the well known terminal emulator rxvt"
url="http://software.schmorp.de/"
makedepends=('autoconf')
depends=('x')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://dist.schmorp.de/rxvt-unicode/ |grep rxvt-unicode.*.tar.bz2 |sed -n -e 's/.*e-\([0-9\.]\+\)\.t.*/\1/;1 p'"
source=(http://dist.schmorp.de/rxvt-unicode/$pkgname-$pkgver.tar.bz2)
sha1sums=('daca513e78b7b369777219e05a40c9b285d9d76e')

build() {
	Fcd
	./autogen.sh || Fdie
	Fconf --enable-everything \
		--disable-xpm-background
	Fsed "-g -O3" "$CFLAGS" Makefile
	Fsed "-g -O3" "$CFLAGS" src/Makefile
	Fsed "-g -O3" "$CFLAGS" doc/Makefile
	make || Fdie
	Fmakeinstall
}

# optimalization OK

