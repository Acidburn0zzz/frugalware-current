# Last Modified: Thu, 26 May 2005 11:00:22 +0200
# Compiling Time: ~1 minute
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=oroborox
pkgver=0.9.6_13
realver=`echo $pkgver | tr _ -`
pkgrel=1
pkgdesc="OroboROX is a lightweight Window Manager for the ROX Desktop."
url="http://rox.sourceforge.net/"
depends=('expat' 'freetype2' 'glib2' 'x' 'zlib')
groups=('x11-extra')
archs=('i686')
up2date="lynx -dump $url/phpwiki/index.php/NewStuff | grep -A 1 'Orobo ROX' | grep -o [0-9]\.[0-9]\.[0-9]-[0-9]* | head -n 1 | tr - _"
source=(http://roxos.sunsite.dk/dev-contrib/guido/OroboROX-$realver.tar.bz2 oroborox)
md5sums=('532a5d97e9534d2d33531056e24925c2' 'edf05906a563d06db36d2cd6b7ddffa4')
license="GPL"

build()
{
	Fmkdir /usr/bin /usr/share/apps
	Fexe /usr/bin/oroborox
	OroboROX/AppRun --compile || return 1
	cp -arv OroboROX $Fdestdir/usr/share/apps/ || return 1
	Fln oroborox /usr/bin/OroboROX || return 1
	Frm /usr/share/apps/OroboROX/\=build \
		/usr/share/apps/OroboROX/src || return 1
	Fdocrel OroboROX/Help/* || return 1
	Frm /usr/share/doc/$pkgname-$pkgver/*.sh || return 1
}

# vim: ft=sh
