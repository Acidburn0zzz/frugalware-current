# Last modified: Sat, 23 Apr 2005 22:16:40 +0200
# Compiling time: ~2 minutes
# Maintainer: Shrift <shrift at frugalware dot org>

pkgname=fwflux
pkgver=0.1
pkgrel=1
pkgdesc="A great theme for fluxbox in style of frugalware"
url="http://frugalware.org"
depends=('fluxbox')
groups=('x11-extra')
archs=('i686')
source=(http://frugalware.org/~shrift/$pkgname-$pkgver.tar.bz2)
md5sums=('d845831365bbe2d59d0c66aaacd4fc34')

build() {
    mkdir -p $startdir/pkg/usr/share/fluxbox/styles	
    cd $startdir/src
    cp -R FwFlux $startdir/pkg/usr/share/fluxbox/styles/
    chmod 755 $startdir/pkg/usr/share/fluxbox/styles/FwFlux
    chmod 755 $startdir/pkg/usr/share/fluxbox/styles/FwFlux/pixmaps
    chmod 644 $startdir/pkg/usr/share/fluxbox/styles/FwFlux/*
    chmod 644 $startdir/pkg/usr/share/fluxbox/styles/FwFlux/pixmaps/*
}

# vim: ft=sh
