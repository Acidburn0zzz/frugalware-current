pkgname=cdemu
pkgver=0.7
pkgrel=3
pkgdesc="A kernel module designed to simulate a CD drive with just simple cue/bin files."
url="http://cdemu.sourceforge.net/"
Finclude kernel-module
depends=(${depends[@]} 'python')
groups=('apps-extra')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump http://cdemu.sourceforge.net/#download|grep -m1 'Current Release'|sed 's/.*: //'"
source=(http://robert.private.outertech.com/virtualcd/$pkgname-$pkgver.tar.bz2 linux-2.6.17.patch)
sha1sums=('5041223ea4ed7361992990c208b258e54bd37891' \
          '67cec92c2dbf3601357d867462c878af85b16680')

build()
{
	# no Fcheckkernel, crosscompilation verified
	Fsed '$(shell uname -r)' "$kernelbasever-fw$kernelrel" Makefile
	Fbuild
}

