pkgname=lzma
pkgver=0.04
pkgrel=1
pkgdesc="Archive is a very easy to use program for creating and extracting file archives."
url="http://martinus.geekisp.com/rublog.cgi/Projects/LZMA"
depends=('libstdc++')
groups=('apps-extra')
archs=('i686')
license="GPL2"
up2date="lynx -dump http://martinus.geekisp.com/rublog.cgi/Projects/LZMA | grep '.tar.gz' | sed -ne 's/.*-//;s/\.tar\.gz//;1 p'"
source=(http://martinus.geekisp.com/files/$pkgname-$pkgver.tar.gz)
sha1sums=('f6ca13b9aa0eab8c45a3dd3a2e2c2c05242423f1')

build() {
	Fmkdir usr/bin/
	Fmake
	Fexerel usr/bin/lzma
}

# vim: ft=sh
# optimalization OK - noarch
