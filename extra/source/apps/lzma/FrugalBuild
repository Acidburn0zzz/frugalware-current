pkgname=lzma
pkgver=4.27.1
pkgrel=3
pkgdesc="High compression utility based on LZMA SDK"
url="http://tukaani.org/"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://tukaani.org/lzma/download|grep -m1 .tar.gz|sed -e 's/.*]lzma-//' -e 's/.tar.gz//'"
source=($url/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('39ee4321c26c80d2190347a5e1961323c913e008')

build()
{
	Fcd
	[ "$CARCH" == "x86_64" ] && export CFLAGS="$CFLAGS -fPIC"
	make || return 1
	make test || return 1
	make prefix=$Fdestdir/usr install || return 1
}
# optimalization OK - noarch
