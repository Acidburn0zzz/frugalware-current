# Compiling Time: ~3 minute
# Maintainer: Karoly CZOVEK <slinky@rei.keni.hu>

pkgname=logcheck
pkgver=1.2.40
pkgrel=1
pkgdesc="a program to check system logs for unusual events and mail them to sysadmin"
url="http://alioth.debian.org/download.php/1049"
depends=('glibc' 'gd') 
groups=('network')
archs=('i686' 'x86_64')
#up2date="lynx -dump http://people.ee.ethz.ch/~oetiker/webtools/mrtg/ | grep Latest|sed -ne 's|.*MRTG \(.*\)|\1|; 1p'"
source=($url/$pkgname-$pkgver.tar.gz)
md5sums=('5d551961f207686d742238091a9690c5')
install=$pkgname.install

build()
{
	Fcd 
	make DESTDIR=$Fdestdir install
	Fmkdir /usr/share/doc/$pkgname-$pkgver || return 1
	echo PWD IS $PWD
	cp -ar docs/* $Fdestdir/usr/share/doc/$pkgname-$pkgver/
	
}


