pkgname=asterisk-addons
pkgver=1.2.3
pkgrel=1
pkgdesc="Open Source Private Branch Exchange (PBX) - addons"
url="http://www.asterisk.org/"
backup=(etc/asterisk/*)
depends=('asterisk-sounds' 'asterisk' 'glibc' 'mysql' 'libpqxx' 'openssl')
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump $url | grep 'Addons Version' | cut -d ] -f 2"
source=(http://ftp.digium.com/pub/asterisk/$pkgname-$pkgver.tar.gz)
sha1sums=('3bb0200aeb1832d1958130afc664faf9eedd81f5')

build() {
	Fcd
	Fmkdir usr/lib/asterisk/modules
	Fbuild
	cd asterisk-ooh323c
	Fmessage "Configuring asterisk-ooh323c..."
	Fmake
	Fmakeinstall
	Fdoc $pkgname-$pkgver/configs/cdr_mysql.conf.sample
	Fdoc $pkgname-$pkgver/configs/res_mysql.conf.sample
}

# optimization ok
