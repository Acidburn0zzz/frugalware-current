pkgname=xrestop
pkgver=0.3
pkgrel=1
pkgdesc="A utility to monitor the usage of resources within the X Server, and display them in a manner similar to top."
url="http://www.freedesktop.org/Software/xrestop"
license="GPL"
depends=('libxres' 'ncurses')
archs=('i686')
groups=('apps-extra')
up2date="lynx -dump $url/|grep $pkgname-[0-9\.]*\.tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('b92390f370d3b86c0c82c60c4423fa3d564d8c9e')

build()
{
	Fbuild
}

