. /etc/rc.d/rc.functions

if [ "$1" = "stop" ]; then
	stop "$stopfam"
	killall famd
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startfam"
	/usr/sbin/famd
	ok $?
fi
