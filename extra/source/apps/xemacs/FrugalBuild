# Last Modified: Sat, 17 Dec 2005 16:09:23 +0100
# Compiling Time: ~0.39 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=xemacs
pkgver=21.4.18
pkgrel=1
pkgdesc="XEmacs is a highly customizable open source text editor and application development system."
url="http://www.xemacs.org/"
depends=('gpm' 'libtiff' 'db' 'libjpeg')
makedepends=('x')
rodepends=('xemacs-base' 'xemacs-efs')
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump $url/Releases/index.html |grep http.*Releases/[0-9] |sed -ne 's:.*s/\(.*\).h.*:\1:;2 p'"
source=(ftp://ftp.be.xemacs.org/xemacs/xemacs-21.4/$pkgname-$pkgver.tar.gz)
sha1sums=('b71f8ffe0f977333902001f83d57e7eb95f67a90')

build() {
	Fcd
	./configure --prefix=$Fprefix \
		--with-x11 \
		--with-ncurses \
		--with-xpm \
		--with-png \
		--with-jpeg \
		--with-tiff \
		--with-gpm \
		--with-ldap=no
	make || Fdie
	Fmakeinstall
}

# vim: ft=sh

# optimalization OK
