# Last Modified: Tue, 07 Jun 2005 20:02:49 +0200
# Compiling Time: ~0.09 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=snownews
pkgver=1.5.7
pkgrel=1
pkgdesc="Text mode RSS newsreader for Linux and Unix."
url="http://kiza.kcore.de/software/snownews/index.en"
depends=('ncurses' 'libxml2')
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump http://kiza.kcore.de/software/snownews/index.en |grep Snownews |sed 's/.*news //'"
source=(http://kiza.kcore.de/software/snownews/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('75ffa004e755a233f49b1cdfcd9e3d85')
license="GPL2"

build() {
	Fcd
	Fsed "-Wall -Wno-format-y2k -O2" "-Wall -Wno-format-y2k $CFLAGS" configure
	Fmake || return 1
	Fmakeinstall || return 1
	Frm /usr/bin/snow2opml
	Fln /usr/bin/opml2snow /usr/bin/snow2opml
}

# optimalization OK

# vim: ft=sh
