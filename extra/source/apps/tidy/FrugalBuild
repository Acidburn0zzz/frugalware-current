pkgname=tidy
pkgver=20050921
pkgrel=1
pkgdesc="Tidy the layout and correct errors in HTML, XHTML and XML documents"
url="http://tidy.sourceforge.net/"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="date +%Y%m%d --date \"$(lynx -dump http://tidy.sourceforge.net/|grep 'source code last'|sed 's/.*]\(.*\),\(.*\)\.$/\1\2/')\""
source=(http://tidy.sourceforge.net/src/tidy_src.tgz)
sha1sums=('d2bddf031176f44858cf51c86b8889fbb1e66222')

build() {
	Fcd $pkgname
	sh build/gnuauto/setup.sh
	Fmake --enable-asian --enable-utf16 --enable-access || return 1
	Fmakeinstall || return 1
}

# vim: ft=sh

# optimalization OK
