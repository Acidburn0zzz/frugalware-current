# Last modified: Mon, 14 Mar 2005 17:28:01 +0100
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=tidy
pkgver=20050310
pkgrel=1
pkgdesc="Tidy the layout and correct errors in HTML, XHTML and XML documents"
url="http://tidy.sourceforge.net/"
depends=('glibc')
groups=('apps-extra')
archs=('i686')
up2date="date +%Y%m%d --date \"$(lynx -dump http://tidy.sourceforge.net/|grep 'source code last'|sed 's/.*]\(.*\),\(.*\)\.$/\1\2/')\""
source=(http://tidy.sourceforge.net/src/tidy_src.tgz)
md5sums=('b49b484b5344231e245ee0915853d697')

build() {
	cd $startdir/src/tidy/build/gmake/
	sed -i "s|^runinst_prefix=/usr/local|runinst_prefix=$startdir/pkg/usr/|g" Makefile
	sed -i "s|^devinst_prefix=/usr/local|devinst_prefix=$startdir/pkg/usr/|g" Makefile
	sed -i "s|^CFLAGS= -Wall|CFLAGS= -march=i686 -O2 -pipe -Wall|" Makefile

	make || return 1

	make install
}

# vim: ft=sh
