pkgname=httrack
pkgver=3.40
pkgrel=1
pkgdesc="HTTrack is a free and easy-to-use offline browser utility."
url="http://www.httrack.com"
depends=('zlib')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.httrack.com/page/2/en/index.html | grep tar.gz | sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://www.httrack.com/$pkgname-$pkgver.tar.gz)
sha1sums=('07caa3c8a259e8d24be882a25f32adbc19bdc2db')

build()
{
	Fcd $pkgname-$pkgver.1
	rm ./ChangeLog ./NEWS
	Fmake --enable-static=no
	Fmakeinstall
	Fmv usr/share/doc/$pkgname/ usr/share/doc/$pkgname-$pkgver/
	Fln /usr/share/doc/$pkgname-$pkgver/html/ usr/share/$pkgname/html
}

# optimalization ok

