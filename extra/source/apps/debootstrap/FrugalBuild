pkgname=debootstrap
pkgver=0.1.17.7woody1
pkgrel=1
pkgdesc="Bootstrap a basic Debian system"
url="http://www.debian.org"
depends=('glibc')
makedepends=('binutils')
groups=('apps-extra')
archs=('i686' 'x86_64')
source=(http://ftp.debian.org/pool/main/d/debootstrap/debootstrap_${pkgver}_i386.deb)
up2date="lynx -dump 'http://packages.debian.org/stable/admin/debootstrap' | grep debootstrap_.*.tar.gz | head -n 1 | sed 's/.*debootstrap_\(.*\).tar.gz.*/\1/'"

build() {
	ar x debootstrap_${pkgver}_i386.deb && tar -xvzf data.tar.gz
	cp -R usr/ $Fdestdir
}

md5sums=('2cb1061120e1e19c9ad68f184bc61816')
