# Last Modified: Wed, 14 Jun 2006 21:41:38 +0200
# Compiling Time: 0.02 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=pngnq
pkgver=0.4
pkgrel=1
pkgdesc="A PNG compression utility"
url="http://www.cybertherial.com/pngnq/pngnq.html"
depends=('libpng')
groups=('apps-extra')
archs=('x86_64' 'i686')
up2date="lynx -dump http://www.cybertherial.com/pngnq/pngnq.html|grep Version|tr -s ' '|cut -d ' ' -f 5 | sed -e 's/pngnq-//g'"
source=(http://www.cybertherial.com/pngnq/$pkgname-$pkgver-src.tar.gz \
	pngnq-makefile-corrections.patch)
sha1sums=('27a5a857a6f240777891b984ef62f98fe6dcd407' \
	  '520caed1c569ced6c4828cc2f7b17b7928d28d73')

build() {
	Fcd $pkgname-$pkgver
	Fpatchall
	Fmake
	Fmkdir usr/bin
	Fmakeinstall
}

# optimalization OK

# optimization OK
