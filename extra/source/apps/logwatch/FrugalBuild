pkgname=logwatch
pkgver=6.1.2
pkgrel=1
pkgdesc="a program to check system logs for unusual events and mail them to sysadmin"

url="ftp://ftp.kaybee.org/pub/linux"
depends=('glibc' 'gd') 
groups=('network')
archs=('i686' 'x86_64')
#up2date="lynx -dump http://people.ee.ethz.ch/~oetiker/webtools/mrtg/ | grep Latest|sed -ne 's|.*MRTG \(.*\)|\1|; 1p'"
source=($url/$pkgname-$pkgver.tar.gz)
md5sums=('a764bf80a31ab04ca788ac1303cba297')

install=$pkgname.install

build()
{
	Fcd 
	Fmkdir  /etc/log.d
	cp -ar {scripts,lib,conf} $Fdestdir/etc/log.d
	
	#make DESTDIR=$Fdestdir install
	Fmkdir /usr/share/doc/$pkgname-$pkgver || return 1
	#echo PWD IS $PWD
	cp {HOWTO-Make-Filter,License,README,logwatch-6.1.2.spec,logwatch.8}  $Fdestdir/usr/share/doc/$pkgname-$pkgver/
	Fln /etc/log.d/scripts/logwatch.pl /usr/sbin/logwatch	
}


# vim: ft=sh


