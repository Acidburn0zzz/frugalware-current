# Last Modified: Sat, 08 Apr 2006 02:56:04 +0200
# Compiling Time: 0.12 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=paco
pkgver=1.10.5
pkgrel=1
pkgdesc="A source code package management system."
url="http://paco.sourceforge.net/"
license="GPL2"
up2date="lynx -dump $url/downloads.html|grep -m 1 -o '[0-9\.]\+\.tar\.bz2'|sed 's|.tar.bz2||'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('d772868690d36ab61a509aaf3b5e3027ff86d817')
groups=('apps-extra')
archs=('i686')
makedepends=('gtk+2')
depends=('glibc')

subpkgs=("gpaco")
subdescs=("Gtk+2 frontend for paco")
sublicense=("GPL2")
subgroups=('xapps-extra')
subdepends=('gtk+2 paco')
subarchs=('i686')

build()
{
	Fmake
	Fmakeinstall sysconfdir=$Fdestdir/etc LOGDIR=$Fdestdir/var/log/paco
	Fln $pkgname-$pkgver /usr/share/doc/gpaco-$pkgver
	Fsplit gpaco usr/bin/gpaco
	Fsplit gpaco usr/share/{applications,doc/gpaco-$pkgver,pixmaps}
}

# vim: ft=sh

# optimalization OK
