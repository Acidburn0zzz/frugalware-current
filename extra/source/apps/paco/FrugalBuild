pkgname=paco
pkgver=1.10.7
pkgrel=1
pkgdesc="A source code package management system."
license="GPL2"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
url="http://paco.sourceforge.net/"
sha1sums=('6b7691266b1bcccafc7383c7b3f26ae5bf9c5010')
groups=('apps-extra')
archs=('i686')
makedepends=('gtk+2')
depends=('glibc')

subpkgs=("gpaco")
subdescs=("Gtk+2 frontend for paco")
sublicense=("GPL2")
subgroups=('xapps-extra')
subdepends=('gtk+2 paco')
subarchs=('i686')

build()
{
	Fmake
	Fmakeinstall sysconfdir=$Fdestdir/etc LOGDIR=$Fdestdir/var/log/paco
	Fsplit gpaco usr/bin/gpaco
	Fsplit gpaco usr/share/{applications,pixmaps}
}

# vim: ft=sh

# optimization OK
