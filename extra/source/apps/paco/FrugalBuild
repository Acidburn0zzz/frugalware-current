# Last Modified: Sun, 05 Mar 2006 10:55:02 +0100
# Compiling Time: 0.11 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=paco
pkgver=1.10.3
pkgrel=1
pkgdesc="A source code package management system."
url="http://paco.sourceforge.net/"
license="GPL2"
up2date="lynx -dump $url/downloads.html|grep -m 1 -o '[0-9\.]\+\.tar\.bz2'|sed 's|.tar.bz2||'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('02be3504701898e65e1f92f4f40be3b14a0cc09f')
groups=('apps-extra')
archs=('i686')
makedepends=('gtk+2')
depends=('glibc')

subpkgs=("g$pkgname")
subdescs=("Gtk+2 frontend for paco")
sublicense=("GPL2")
subgroups=('xapps-extra')
subdepends=('gtk+2')
subarchs=('i686')

build()
{
	Fsed '$(sysconfdir)' '$(DESTDIR)/$(sysconfdir)' doc/Makefile.in
	Fbuild
	Fmv /var/tmp/fst/pkg/etc /
	Frm /var
	Fmkdir /usr/share/doc/${subpkgs[0]}-$pkgver
	Ffilerel AUTHORS BUGS COPYING INSTALL README \
	/usr/share/doc/${subpkgs[0]}-$pkgver/
	Fsplit ${subpkgs[0]} usr/bin/${subpkgs[0]}
	Fsplit ${subpkgs[0]} usr/share/{applications,pixmaps}
	Fsplit ${subpkgs[0]} usr/share/doc/${subpkgs[0]}-$pkgver
}

# vim: ft=sh

# optimalization OK
