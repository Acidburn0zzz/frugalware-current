# Last Modified: Sat, 22 Apr 2006 10:09:38 +0200
# Compiling Time: 0.14 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=paco
pkgver=1.10.6
pkgrel=1
pkgdesc="A source code package management system."
license="GPL2"
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
url="http://paco.sourceforge.net/"
sha1sums=('d7b88eec4ecfe697b916802c45d6efd0d4dd93a2')
groups=('apps-extra')
archs=('i686')
makedepends=('gtk+2')
depends=('glibc')

subpkgs=("gpaco")
subdescs=("Gtk+2 frontend for paco")
sublicense=("GPL2")
subgroups=('xapps-extra')
subdepends=('gtk+2 paco')
subarchs=('i686')

build()
{
	Fmake
	Fmakeinstall sysconfdir=$Fdestdir/etc LOGDIR=$Fdestdir/var/log/paco
	Fln $pkgname-$pkgver /usr/share/doc/gpaco-$pkgver
	Fsplit gpaco usr/bin/gpaco
	Fsplit gpaco usr/share/{applications,doc/gpaco-$pkgver,pixmaps}
}

# vim: ft=sh

# optimalization OK
