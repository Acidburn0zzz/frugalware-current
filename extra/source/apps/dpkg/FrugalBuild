# Last modified: Fri, 17 Jun 2005 12:19:38 +0000
# Compiling time: ~2 minutes
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=dpkg
pkgver=1.13.8
pkgrel=2
pkgdesc="Package maintenance system for Debian"
url="http://www.debian.org"
depends=('bzip2' 'zlib')
groups=('apps-extra')
archs=('i686' 'x86_64')
source=(http://ftp.debian.org/pool/main/d/dpkg/dpkg_${pkgver}.tar.gz)
up2date="lynx -dump 'http://packages.debian.org/experimental/base/dpkg' | grep dpkg_.*.tar.gz | head -n 1 | sed 's/.*dpkg_\(.*\).tar.gz.*/\1/'"
md5sums=('27f76b8acacfe8b94a4d01aec1f67ccd')

build() {
	Fbuild --sysconfdir=/etc --without-dselect --without-start-stop-daemon --without-sgml-doc \
		--localstatedir=/var
	Frm /usr/bin/md5sum
	Frm /usr/man/man1/md5sum.1
}

# vim: ft=sh
