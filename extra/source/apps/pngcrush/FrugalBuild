# Compiling Time: 0.06 SBU
# Maintainer: crazy <crazy@frugalware.org>


pkgname=pngcrush
pkgver=1.6.4
pkgrel=1
pkgdesc="Pngcrush is an optimizer for PNG (Portable Network Graphics) files."
url="http://pmt.sourceforge.net/pngcrush/"
depends=('glibc')
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=1689|grep '.bz2$'|grep -v nolib|head -n 1|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/pmt/$pkgname-$pkgver.tar.bz2)
sha1sums=('a6efa5b6081994449ffe9fe31cf8f6775a797f3a')

build()
{
	Fcd
	## let me be nice to the x64 porter :-)
	if [ "$CARCH" == "x86_64" ]; then
		Fsed "-O3" "${CFLAGS} -fPIC" Makefile
	else
		Fsed "-O3" "${CFLAGS}" Makefile
	fi
	make || return 1
	Finstallrel 0755 /usr/bin/pngcrush
}

# optimization OK
