pkgname=antiword
pkgver=0.36.1
pkgrel=1
pkgdesc="Antiword is a free MS Word reader for Linux and RISC OS"
url="http://www.winfield.demon.nl/"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | egrep 'tar.gz' |sed 's/^.\+http.\+-\([0-9.]\+\)\.tar\.gz$/\1/g'"
source=($url/linux/$pkgname-$pkgver.tar.gz)
sha1sums=('36478acb583200e44e0a688eb859894d984e5854')
license="GPL"

build()
{
	Fsed '-O2' "$CFLAGS" Makefile
	Fmake
	make PROGS=antiword GLOBAL_INSTALL_DIR=/usr/bin DESTDIR=$Fdestdir \
		global_install || return 1
}

# vim: ft=sh

# optimalization OK
