#!/bin/sh

sed -e "s/©/(C)/g;s/®/(R)/g;s/å/a/g;s/ñ/n/g;s/×/x/g;s/ê/e/g;s/è/e/g;s/“//g;s/”//g;s/‘/'/g;s/’/'/g;s/•/\*/g;s/→/->/g;" | \
msgconv -t iso-8859-2 | \
tr -d "_" | \
awk '
	BEGIN {
		do_print = 0;
		count = 0;
	}
	/^msgid/ {
		do_print = 0;
	}
	/^msgstr/ {
		do_print = 1;
		count = count + 1;
	}
	//	{
		if (do_print && count > 2) print $0;
	}
' | grep -v '^#' | sed -e 's/^msgstr "//' -e 's/^"//' -e 's/"$//' | \
sed 's/\\.//g' | huspell
