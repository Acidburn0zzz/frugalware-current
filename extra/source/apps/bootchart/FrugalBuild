pkgname=bootchart
pkgver=0.8
pkgrel=1
pkgdesc="A tool for performance analysis and visualization of the boot process"
url="http://www.bootchart.org/"
depends=('sysvinit')
groups=('apps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
source=(${source[@]} \
	00-$pkgname-0.8-frugalware.patch)
md5sums=('ea999eecbd252b60dbe8e1e6a530cac0' \
	'8db03c84e19208dd891a4f9e9ac2cf9c')

build()
{
	Fpatchall
	cd script
	Fsed '/bin/sleep' '/usr/bin/sleep' bootchartd
	Fsed '/bin/sed' '/usr/bin/sed' bootchartd
	Fexerel bootchartd /sbin/bootchartd
	Ffilerel bootchartd.conf /etc/bootchartd.conf
}

# optimalization OK - noarch

# vim: ft=sh
