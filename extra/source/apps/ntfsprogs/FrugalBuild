pkgname=ntfsprogs
pkgver=1.13.0
pkgrel=1
pkgdesc="The ntfsprogs will eventually include utilities for doing all required tasks to NTFS partitions."
url="http://www.linux-ntfs.org/"
depends=('glibc' 'fuse')
makedepends=('gnome-vfs')
groups=('apps-extra')
archs=('x86_64' 'i686')
up2date="lynx -dump $url|grep 'Newest available '|grep 'Newest available '|sed 's/.*s \(.*\), .*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/linux-ntfs/$pkgname-$pkgver.tar.gz)
sha1sums=('14dc4c6e47974d1c9d9cd2175557e30819054b41')

subpkgs=('ntfsprogs-gnome')
subdescs=('ntfsprogs gnome VFS modules')
subdepends=('gnome-vfs ntfsprogs')
subgroups=('gnome-extra')
subarchs=('x86_64 i686')

build() {
	Fbuild
	Fsplit ntfsprogs-gnome /etc/gnome-vfs-2.0/
	Fsplit ntfsprogs-gnome /usr/lib/gnome-vfs-2.0/
	Fsplit ntfsprogs-gnome /usr/man/man8/libntfs-gnomevfs.8
}

# optimalization OK
