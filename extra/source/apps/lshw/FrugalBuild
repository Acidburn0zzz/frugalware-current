pkgname=lshw
pkgver=B.02.05.01
pkgrel=1
pkgdesc="A tool to provide information on the hardware configuration of the machine."
url="http://ezix.sourceforge.net/software/lshw.html"
license="GPL2"
up2date="lynx -dump $url | grep 'latest version' | cut -d ] -f 2 | sed 's|.$||'"
source=(http://ezix.sourceforge.net/software/files/$pkgname-$pkgver.tar.gz)
sha1sums=('a58afacea2fea8faf87bb07f367da3f4679cc40d')
groups=('apps-extra')
archs=('i686')
depends=('gtk+2')

build()
{
	Fcd
	for i in `find . -name Makefile` ; do
		Fsed "DESTDIR=/" "DESTDIR=$Fdestdir" $i
		Fsed "-Os \$(" "$CXXFLAGS \$(" $i
	done
	Fmake
	Fmakeinstall
	Fmake gui
	Fmakeinstall install-gui 
}

# vim: ft=sh

# optimalization OK
