# Last modified: Fri, 03 Jun 2005 10:48:54 +0000
# Compiling time: ~1 minute
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=w3m
pkgver=0.5.1
pkgrel=1
pkgdesc='A pager with WWW capability'
url="http://w3m.sourceforge.net"
depends=('libgc' 'openssl' 'termcap')
groups=('apps-extra')
archs=('i686' 'x86_64')
source=(http://download.sourceforge.net/$pkgname//$pkgname-$pkgver.tar.gz)
up2date="lynx -dump http://sourceforge.net/projects/w3m/ | grep released | sed -n \"s/.*w3m \(.*\) released.*/\1/; 1 p\""
md5sums=('0678b72e07e69c41709d71ef0fe5da13')

build() {
	# if you use gpm, it writes "debug [/lib/liblow.c]" messages to the
	# console
	Fbuild --enable-image=no --enable-ansi-color --disable-w3mmailer --disable-mouse
	Frm /usr/libexec
	Frm /usr/bin/w3mman
}

