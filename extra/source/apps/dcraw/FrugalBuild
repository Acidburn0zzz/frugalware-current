# Last Modified: Mon, 01 May 2006 19:08:48 +0530
# Compiling Time: 0.02 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=dcraw
pkgver=1.323
pkgrel=1
pkgdesc="A command line based converter for raw digital photos"
url="http://www.cybercom.net/~dcoffin/dcraw/"
makedepends=('gzip')
depends=('libjpeg' 'lcms')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date=$pkgver
source=(http://www.cybercom.net/~dcoffin/$pkgname/$pkgname.{c,1})
sha1sums=('f5e8a65cc461cdf7f621624b5383efaae769eeef' \
	  'dfd2bc0d865b5cf03144cab1883623f5751dc9de')


build() {
  	cd $Fsrcdir
    	Fmessage "Compiling dcraw..."
  	gcc -o dcraw ${CFLAGS} dcraw.c -lm -ljpeg -llcms
  	Finstall 755 dcraw usr/bin/dcraw
  	
  	# Install the manpage
  	gzip -c -9 dcraw.1 > dcraw.1.gz
  	Ffile dcraw.1.gz usr/man/man1/dcraw.1.gz
}

# optimization OK
