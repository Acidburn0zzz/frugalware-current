# Compiling Time: 0.38 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=busybox
pkgver=1.1.1
pkgrel=1
pkgdesc="Utilities for rescue and embedded systems."
url="http://www.busybox.net/"
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.busybox.net/downloads/|grep busybox-[0-9].*bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://www.busybox.net/downloads/busybox-$pkgver.tar.bz2 config)
sha1sums=('a3bced531f5b0cb001918fcad94123796b7b22b4' \
	  'a922e0d6b10b798916b241bf20d83c9b7edf9585')

build()
{
	Fcd
	cp $Fsrcdir/config .config
	Fsed '-march=i686' "$CFLAGS" .config
	Fmake
	make PREFIX=$Fdestdir/usr/share/busybox install || return 1
}

# optimalization OK
