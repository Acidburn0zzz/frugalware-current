pkgname=fish
pkgver=1.20.1
pkgrel=1
pkgdesc="fish is a user friendly command line shell for UNIX-like operating systems."
url="http://roo.no-ip.org/fish/"
license="GPL 2"
install=$pkgname.install
up2date="lynx -dump $url|grep -m 1 -o '[0-9\.]\+[0-9]\.tar\.bz2'|grep -o '[0-9\.]\+[0-9]'"
source=($url/files/$pkgver/$pkgname-$pkgver.tar.bz2 \
        $pkgname-1.20.1-xbrowser.patch)
sha1sums=('861ecf1af52ecc4a474419dcc7e6ad651eb6b6c3' \
          '91afcb508c800ba0c4b92c11c69035a7f0f0182e')
groups=('apps-extra')
archs=('i686')
makedepends=('doxygen' 'libsm' 'libxext')
depends=('ncurses')

build()
{
	Fbuild docdir=/usr/share/doc/$pkgname-$pkgver \
	       --prefix=/ --mandir=/usr/man --datadir=/usr/share
}

# vim: ft=sh

