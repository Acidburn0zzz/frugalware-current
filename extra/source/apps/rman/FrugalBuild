# Last Modified: Sat, 25 Feb 2006 07:47:11 +0000
# Compiling Time: 0.25 SBU
# Maintainer: alex_extreme <alex.extreme2@gmail.com>

pkgname=rman
pkgver=3.2
pkgrel=1
pkgdesc="PolyGlotMan is a Man page translator"
url="http://polyglotman.sourceforge.net"
depends=('glibc')
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=4293 | grep Latest |sed 's/ //g'|sed 's/Latest....//g'|sed 's/Re.*//g'|sed 's/hd.*//g'|sed 's/.....N.*//g'|sed -e '/^$/d'"
source=(http://kent.dl.sourceforge.net/sourceforge/polyglotman/$pkgname-$pkgver.tar.gz)
sha1sums=('d3b2889b5feabb78a0422a1f5d3ae9fdf0333b79')

build()
{
	Fcd
	make
	Fexe $pkgname-$pkgver/rman /usr/bin/rman
	Ffilerel rman.1 /usr/man/man1/rman.1
}

# vim: ft=sh

# optimalization OK
