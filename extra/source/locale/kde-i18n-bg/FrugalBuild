# Last Modified: Sun, 31 Jul 2005 10:08:40 +0200
# Compiling Time: ~0.14 SBU
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kde-i18n-bg
pkgver=3.4.2
pkgrel=1
pkgdesc="Bulgarian Localization for KDE."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.2/src/kde-i18n"
depends=('kdebase=3.4.2')
groups=('locale-extra')
archs=('i686' 'x86_64')
up2date="wget --passive-ftp -O - -q ftp://ftp.kde.org/pub/kde/stable/latest/src/MD5SUMS|grep $pkgname|sed -n \"1 p\"|sed \"s/.tar.bz2//\"|cut -d - -f 5"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=(`wget --passive-ftp -O - -q ftp://ftp.kde.org/pub/kde/stable/latest/src/MD5SUMS|grep $pkgname|cut -d ' ' -f 1`)

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-debug
	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh
