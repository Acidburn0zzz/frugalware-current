# Last Modified: Fri, 14 Oct 2005 22:22:42 +0200
# Compiling Time: ~0.14 SBU
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kde-i18n-ta
pkgver=3.4.3
pkgrel=1
pkgdesc="Tamil Localization for KDE."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.3/src/kde-i18n"
depends=('kdebase=3.4.3')
groups=('locale-extra')
archs=('i686' 'x86_64')
up2date="wget --passive-ftp -O - -q ftp://ftp.kde.org/pub/kde/stable/latest/src/MD5SUMS|grep $pkgname|sed -n \"1 p\"|sed \"s/.tar.bz2//\"|cut -d - -f 5"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=(`wget --passive-ftp -O - -q ftp://ftp.kde.org/pub/kde/stable/latest/src/MD5SUMS|grep $pkgname|cut -d ' ' -f 1`)

build() {
	cd $startdir/src/$pkgname-$pkgver
	#patch -p1 <$startdir/src/$pkgname-$pkgver.diff
	./configure --prefix=/usr --disable-debug
	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh
