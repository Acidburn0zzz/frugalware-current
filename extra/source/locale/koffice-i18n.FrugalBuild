#!/bin/bash

# builds all koffice localization packages

build() {
  LC_ALL=
  LANG=
  pkg=$1
  shift 1
  cd $pkg
echo "**************"
    pwd
echo "**************"
  	makepkg -c $* || exit 1
	pacman -U -f *fpm $*
	# movepkg
  cd ..
}

for i in koffice-l10n-*
do
	[ -e $i/*fpm ] || build $i $*
done
