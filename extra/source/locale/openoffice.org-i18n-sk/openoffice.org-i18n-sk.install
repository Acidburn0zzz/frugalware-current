dictlst=/usr/lib/ooo-1.1/share/dict/ooo/dictionary.lst

post_install()
{
	echo "DICT sk SK sk_SK" >>$dictlst
	echo "HYPH sk SK hyph_sk_SK" >>$dictlst
}

pre_remove()
{
	tempfile=`mktemp`
	cat $dictlst |grep -v "\(DICT sk SK sk_SK\|HYPH sk SK hyph_sk_SK\)" >$tempfile
	cat $tempfile >$dictlst
	rm -f $tempfile
}

op=$1
shift
$op $*

