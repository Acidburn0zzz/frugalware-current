lang=es
pkgname=openoffice.org-i18n-$lang
dictname=es_ES
pkgver=2.0.0.1
pkgrel=2
pkgdesc="Spanish Localization for OpenOffice.org."
url="http://ooo.ximian.com/"
rodepends=('openoffice.org')
groups=('locale-extra')
archs=('i686')
Finclude openoffice-i18n
sha1sums=('e67b101185b51a67c4a7df57730f335f51ab1c8d' \
	  '3801efb6d6252e40a743a913afc4f86bb8d3a3ef')

build()
{
	Fresinstall
	Fmkdir $dictdir
	cp -a $dictname.{aff,dic} $Fdestdir$dictdir
}

