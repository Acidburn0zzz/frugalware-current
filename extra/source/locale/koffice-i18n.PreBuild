#!/bin/bash

# run this script before building

LC_ALL=
LANG=

old=1.3.5
new=1.4.0
pkgrel=3
newrel=1
maint="Kapolnasi Tamas <ktamas@tdc.hu>"
for i in koffice-i18n-*
do
	cd $i
		#rm *tar.bz2 *.fpm
		cat FrugalBuild |sed -e "s/$old/$new/" >>.new
		cat .new |sed -e "s/$pkgrel/$newrel/" >>.new2
		echo -n '# Last Modified: ' >FrugalBuild
		date >>FrugalBuild
		cat .new2 |grep -v 'Last Modified:' >>FrugalBuild
		rm -f .new2 .new
	cd ..
done
