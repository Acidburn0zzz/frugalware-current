# Last Modified: Fri Nov 26 12:28:47 CET 2004
# Compiling Time: ~1 minutes
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

lang=eo
pkgname=koffice-i18n-$lang
pkgver=1.3.5
pkgrel=1
pkgdesc="Esperanto language support for KOffice."
url="http://www.koffice.org/"
depends=(koffice=$pkgver)
[ -e ../up2date.koffice-i18n ] && . ../up2date.koffice-i18n
source=($pkgurl/$pkgname-$pkgver.tar.bz2)

build() {
	cd $startdir/src/koffice-i18n-$lang-$pkgver
	./configure --prefix=/opt/kde --disable-debug
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh
