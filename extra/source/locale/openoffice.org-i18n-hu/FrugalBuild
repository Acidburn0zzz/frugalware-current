lang=hu
pkgname=openoffice.org-i18n-$lang
dictname=hu_HU
pkgver=2.0.0.1
pkgrel=1
pkgdesc="Hungarian Localization for OpenOffice.org."
url="http://ooo.ximian.com/"
rodepends=('openoffice.org' 'huhyphn-hu')
groups=('locale-extra')
archs=('i686')
install=$pkgname.install
Finclude openoffice-i18n
sha1sums=('8c16d7de44036f79d4bd1e0ab07a61cfc7000f13' \
	  'f5b41f34ea1819ec18a19a84a7dbc8b43949f139')

build()
{
	Fresinstall
	Fmkdir $dictdir
	cp -a $dictname.{aff,dic} $Fdestdir$dictdir
}

