# Last Modified: Sun, 20 Feb 2005 23:34:50 +0100
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

lang=hu
pkgname=openoffice.org-i18n-$lang
pkgver=1.3.8
pkgrel=1
pkgdesc="Hungarian Localization for OpenOffice.org."
url="http://ooo.ximian.com/"
depends=('openoffice.org' 'huhyphn-hu')
groups=('locale-extra')
install=$pkgname.install
[ -e ../up2date.openoffice.org-i18n ] && . ../up2date.openoffice.org-i18n
md5sums=('7552f3b847f7842a9680454a9094a05f' '02e226a2e8131a39e24f7a0f187968be')

build()
{
	Fcd ""
	Fmkdir $resdir
	cp -a $pkgname-$pkgver/* $Fdestdir$resdir
	Fmkdir $dictdir
	cp -a openoffice.org-i18n-dict-$lang-$pkgver/* $Fdestdir$dictdir
	Frm $dictdir/hyph_hu_HU.dic
}

# vim: ft=sh
