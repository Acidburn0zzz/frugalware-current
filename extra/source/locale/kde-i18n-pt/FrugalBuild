# Last Modified: Thu, 02 Jun 2005 19:06:36 +0200
# Compiling Time: ~1 minutes
# Maintainer: Kapolnasi Tamas <ktamas@tdc.hu>

pkgname=kde-i18n-pt
pkgver=3.4.1
pkgrel=1
pkgdesc="Portuguese Localization for KDE."
url="http://www.kde.org"
pkgurl="ftp://ftp.kde.org/pub/kde/stable/3.4.1/src/kde-i18n"
depends=('kdebase=3.4.1')
groups=('locale-extra')
archs=('i686')
up2date="wget --passive-ftp -O - -q ftp://ftp.kde.org/pub/kde/stable/latest/src/MD5SUMS|grep $pkgname|sed -n \"1 p\"|sed \"s/.tar.bz2//\"|cut -d - -f 5"
source=($pkgurl/$pkgname-$pkgver.tar.bz2)
md5sums=(`wget --passive-ftp -O - -q ftp://ftp.kde.org/pub/kde/stable/latest/src/MD5SUMS|grep $pkgname|cut -d ' ' -f 1`)

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --disable-debug
	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}
