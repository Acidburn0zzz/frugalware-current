# Last Modified: Fri, 25 Nov 2005 23:22:28 +0100
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

lang=he
pkgname=openoffice.org-i18n-$lang
dictname=he_IL
pkgver=2.0.0.1
pkgrel=1
pkgdesc="Hebrew Localization for OpenOffice.org."
url="http://ooo.ximian.com/"
rodepends=('openoffice.org')
groups=('locale-extra')
archs=('i686')
install=$pkgname.install
Finclude openoffice-i18n
sha1sums=('80ba5754913ffa1790d0ecdd16a8f2cad8322776' \
	  'e1374c8bc37735ed50d22ab02ddda53550b190bf')

build()
{
        Fresinstall
        Fmkdir $dictdir
        cp -a $dictname.{aff,dic} $Fdestdir$dictdir
}
			
