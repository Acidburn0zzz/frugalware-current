dictlst=/usr/lib/ooo-2.0/share/dict/ooo/dictionary.lst

post_install()
{
	echo "DICT de DE de_DE" >>$dictlst
}

post_upgrade()
{
	pre_remove
	post_install
}

pre_remove()
{
	tempfile=`mktemp`
	cat $dictlst |grep -v "DICT de DE de_DE" >$tempfile
	cat $tempfile >$dictlst
	rm -f $tempfile
}

op=$1
shift
$op $*

