# Last Modified: Fri, 25 Nov 2005 22:41:17 +0100
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

lang=ca
pkgname=openoffice.org-i18n-$lang
dictname=ca_ES
pkgver=2.0.0.1
pkgrel=1
pkgdesc="Catalan Localization for OpenOffice.org."
url="http://ooo.ximian.com/"
rodepends=('openoffice.org')
groups=('locale-extra')
archs=('i686')
install=$pkgname.install
Finclude openoffice-i18n
sha1sums=('468686ad3af48e7a5d271a2c80b69b817f16f978' \
	  '6e65cf6740f92f5faf74fbde43021d0fceb986b0')

build()
{
        Fresinstall
        Fmkdir $dictdir
        cp -a $dictname.{aff,dic} $Fdestdir$dictdir
}
			
