# Last Modified: Thu, 28 Jul 2005 13:07:23 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

lang=en
pkgname=aspell6-$lang
pkgver=6.0_0
pkgrel=1
pkgdesc="GNU Aspell 0.60 English Dictionary Package"
url="http://aspell.net/"
depends=('aspell>=0.60')
groups=('locale-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://ftp.gnu.org/pub/gnu/aspell/dict/$lang/\?M=D|grep aspell6-$lang|sed -n -e \"s/aspell6-$lang-//\" -e 's/\.tar\..* / /' -e 's/-/_/' -e '1p'|cut -d ] -f 3|cut -d ' ' -f 1"
source=(ftp://ftp.gnu.org/gnu/aspell/dict/$lang/$pkgname-`echo $pkgver|sed 's/_/-/'`.tar.bz2)
md5sums=('16449e0a266e1ecc526b2f3cd39d4bc2')
replaces=('aspell-en')

build() {
	Fcd $pkgname-`echo $pkgver|sed 's/_/-/'`
	./configure || return 1
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1
}

# vim: ft=sh
