dictlst=/usr/lib/ooo-1.1/share/dict/ooo/dictionary.lst

post_install()
{
	echo "DICT fr FR fr_FR" >>$dictlst
}

post_upgrade()
{
	pre_remove
	post_install
}

pre_remove()
{
	tempfile=`mktemp`
	cat $dictlst |grep -v "DICT fr FR fr_FR" >$tempfile
	cat $tempfile >$dictlst
	rm -f $tempfile
}

op=$1
shift
$op $*

