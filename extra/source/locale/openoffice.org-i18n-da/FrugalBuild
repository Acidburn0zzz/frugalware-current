# Last Modified: Fri, 25 Nov 2005 23:19:52 +0100
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

lang=da
pkgname=openoffice.org-i18n-$lang
dictname=da_DK
pkgver=2.0.0.1
pkgrel=1
pkgdesc="Danish Localization for OpenOffice.org."
url="http://ooo.ximian.com/"
rodepends=('openoffice.org')
groups=('locale-extra')
archs=('i686')
install=$pkgname.install
Finclude openoffice-i18n
sha1sums=('bc5d614f3b8d7cb7bf2b7d4ec6da820c2dc294a2' \
	  'de67fdb59eb07f02634c01befd9a74e75d751d5a')

build()
{
        Fresinstall
        Fmkdir $dictdir
        cp -a $dictname.{aff,dic} $Fdestdir$dictdir
}
			
