dictlst=/usr/lib/ooo-1.1/share/dict/ooo/dictionary.lst

post_install()
{
	echo "DICT tn ZA tn_ZA" >>$dictlst
}

post_upgrade()
{
        pre_remove
        post_install
}

pre_remove()
{
	tempfile=`mktemp`
	cat $dictlst |grep -v "\(DICT tn ZA tn_ZA\)" >$tempfile
	cat $tempfile >$dictlst
	rm -f $tempfile
}

op=$1
shift
$op $*

