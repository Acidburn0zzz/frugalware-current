pkgname=jumpnbump
pkgver=1.55
pkgrel=1
pkgdesc="Cute multiplayer platform game with bunnies"
url="http://www.jumpbump.mine.nu"
depends=('sdl_mixer' 'libmikmod' 'libvorbis')
groups=('games-extra')
up2date="lynx -dump http://www.jumpbump.mine.nu/port/|grep tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=($url/port/$pkgname-$pkgver.tar.gz)
md5sums=('165873fca1c7164eb08b4875f9e7da07')

build()
{
	Fcd $pkgname-1.50
	Fbuild || return 1
}

# optimalization ok

