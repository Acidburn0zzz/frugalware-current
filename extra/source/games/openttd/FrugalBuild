# Last modified: Mon, 23 May 2005 09:53:14 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=openttd
pkgver=0.4.0.1
pkgrel=1
pkgdesc="An open source clone of the Microprose game Transport Tycoon Deluxe"
url="http://www.openttd.com/"
depends=('sdl' 'libpng')
groups=('games-extra')
up2date="lynx -dump \"http://prdownloads.sourceforge.net/openttd/?sort_by=date&sort=desc\" | grep openttd-[0-9\.]*-source.tar.gz | head -n 1 | sed -n \"s/.*openttd-\(.*\)-source.tar.gz*/\1/\""
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver-source.tar.gz $pkgname.desktop README)
md5sums=('ddd9790c86b7ccc68f60761704cbcf81' '0c4f8fbb62ebbccf174b9e15d02408d3'\
         '94ec8b1ff3447535eb8a1b591031df9c')

build() {
	Fcd
	make PREFIX=/usr INSTALL=1 BINARY_DIR=bin DATA_DIR=share/openttd PERSONAL_DIR=.openttd USE_HOMEDIR=1 RELEASE=$pkgver
	make DEST_DIR=$startdir/pkg install
	Ffile /usr/share/applications/openttd.desktop
}

# vim: ft=sh
