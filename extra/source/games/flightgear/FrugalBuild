# Last Modified: Thu, 10 Nov 2005 22:18:14 +0100
# Compiling Time: ~16 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=flightgear
pkgver=0.9.8
pkgrel=2
pkgdesc="An open-source, multi-platform flight simulator."
url="http://www.flightgear.org/"
depends=('zlib' 'x' 'openal' 'glut' 'fgfs-base' 'plib')
makdepends=('simgear')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/Downloads/source.shtml|grep Release|sed 's/.*n \(.*\) (.*/\1/'"
source=(ftp://ftp.flightgear.org/pub/fgfs/Source/FlightGear-$pkgver.tar.gz \
	01-amd64-ftbs-fix.patch)
sha1sums=('b6fdc3092fb3f612cb1a5a8a9b3f73bbf69d89c1' \
	  '02a6e7717d0d8b0dea7f0adde3930b076911b5d9')

build()
{
	Fcd FlightGear-$pkgver
	[ "$CARCH" == "x86_64" ] && Fpatchall
	Fmake --with-threads
	Fmakeinstall
}

# optimalization ok

