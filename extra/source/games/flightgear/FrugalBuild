pkgname=flightgear
pkgver=0.9.9
pkgrel=1
pkgdesc="An open-source, multi-platform flight simulator."
url="http://www.flightgear.org/"
depends=('zlib' 'x' 'openal' 'glut' 'fgfs-base' 'plib')
makdepends=('simgear')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/Downloads/source.shtml|grep Release|sed 's/.*n \(.*\) (.*/\1/'"
source=(ftp://ftp.flightgear.org/pub/fgfs/Source/FlightGear-$pkgver.tar.gz)
sha1sums=('230b73263e598eef48b11f0defa28452d7e45ca4')

build()
{
	Fcd FlightGear-$pkgver
	Fmake --with-threads
	Fmakeinstall
}

# optimalization ok

