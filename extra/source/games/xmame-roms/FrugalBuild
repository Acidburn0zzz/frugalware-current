# Last Modified: Tue, 31 May 2005 23:45:26 +0200
# Compiling Time: ~1 second
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=xmame-roms
pkgver=1.0
pkgrel=1
pkgdesc="Freely available ROMs to use with xmame"
url="http://www.mame.net/downmisc.html"
depends=('xmame')
groups=('games-extra')
archs=('i686')
up2date=$pkgver
source=(http://www.mame.net/roms/polyplay.zip \
        http://www.mame.net/roms/robby.zip \
	http://www.mame.net/roms/gridlee.zip)
md5sums=('ea9f4dc6512241e2aa1b95d408fb058d' 'b41742220c453f7df1e0dc17f221ccc7' \
         '47237fb498c4fcb03468645ead97e39f')
license="Freeware"

build()
{
    Fmkdir /usr/share/xmame/roms
    Ffile `basename ${source[0]}` `basename ${source[1]}` \
          `basename ${source[2]}` /usr/share/xmame/roms
}

# vim: ft=sh
