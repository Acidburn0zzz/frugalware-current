# Last modified: Fri, 28 Apr 2006 18:24:34 +0200
# Compiling time: ~0.96 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=ultimatestunts
pkgver=0611
pkgrel=1
pkgdesc="A UNIX/Windows/Linux remake of the DOS-game stunts."
url="http://www.ultimatestunts.nl/"
depends=('sdl' 'mesa' 'openal')
groups=('games-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=61085 |grep srcdata |sed -ne 's/.*data-\(.*\).tar.*/\1/;1p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-srcdata-$pkgver.tar.gz \
	ultimatestunts-0.6.1-{64bits,gcc41}.patch0)
sha1sums=('25a69c70346dd2ca1394645f03224927a86bd511' \
	'508e2013d4200573c162d608de6e7868be462087' \
	'b94248b371e591cd13d9fdd8a6a45b2fef94d399')

build() {
	Fcd $pkgname-srcdata-$pkgver
	Fpatchall
	Fsed "\${usdatadir}" "$Fdestdir\${usdatadir}" data/Makefile.in
	Fmake
	make DESTDIR=$Fdestdir install || Fdie
}

# optimization OK
