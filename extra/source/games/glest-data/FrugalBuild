# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=glest-data
pkgver=2.0.0
pkgrel=1
pkgdesc="glest is a 3D realtime strategy game (data package)"
url="http://sourceforge.net/projects/glest/"
makedepends=('unzip')
groups=('games-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=127297 | grep -m1 data | sed 's/.*0]\(.*\) Ap.*/\1/'"
source=(http://mesh.dl.sourceforge.net/sourceforge/glest/glest_data_$pkgver.zip)
sha1sums=('92cea5cc0e70bcd58ac4afd8a164bde1a9925bba')

build() {
	Fmkdir usr/share/glest
	Fmessage "Copying glest data files... "
	cp -R $Fsrcdir/glest_game/*  $Fdestdir/usr/share/glest/
	Frm usr/share/glest/glest.ini
}
