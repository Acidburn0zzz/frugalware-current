pkgname=scummvm
pkgver=0.9.0
pkgrel=1
pkgdesc="ScummVM is a program which allows you to run certain classic graphical point-and-click adventure games."
url="http://www.scummvm.org/"
makedepends=('nasm')
depends=('sdl>=1.2.2' 'libmad' 'zlib')
groups=('games-extra')
archs=('i686')
up2date="lynx -dump http://www.scummvm.org/downloads.php |grep version |sed -ne 's/.*ion \(.*\)/\1/;1p'"
source=(http://dl.sourceforge.net/sourceforge/scummvm/scummvm-$pkgver.tar.bz2)
options=('nodocs')
sha1sums=('add7b5de06734326e9adacdd4d33264b1e563567')

build() {
	Fbuild --disable-debug
}

# optimization OK
