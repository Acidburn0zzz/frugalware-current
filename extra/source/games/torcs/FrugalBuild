pkgname=torcs
pkgver=1.2.3
pkgrel=1
pkgdesc="The Open Racing Car Simulator"
url="http://torcs.sourceforge.net/"
depends=('x' 'plib' 'libpng' 'glut')
groups=('games-extra')
source=(http://download.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
up2date=`lynx -dump "http://sourceforge.net/project/showfiles.php?group_id=3777&package_id=143144" | grep torcs-.*.tar.bz2 | head -n 1 | sed "s/.*torcs-\(.*\).tar.bz2.*/\1/"`
md5sums=('459007a30be48232afe45e198125fe95')

build()
{
	Fmake || return 1
	Fmakeinstall datainstall
}

# optimalization ok

