pkgname=lincity-ng
pkgver=1.0.3
pkgrel=2
pkgdesc="A City Simulation Game. It is a polished and improved version of the classic LinCity game."
url="http://lincity-ng.berlios.de/wiki/index.php/Main_Page"
license="GPL"
depends=('physfs=1.0.1' 'sdl' 'sdl_mixer' 'sdl_gfx' 'sdl_ttf' 'sdlimage' 'libxml2' 'pkgconfig' \
        'alsa-lib' 'audiofile' 'glibc')
makedepends=('jam')
groups=('games-extra')
archs=('i686')
_F_berlios_ext=.tar.bz2
Finclude berlios
up2date="lynx -dump http://lincity-ng.berlios.de/wiki/index.php/Main_Page | grep -m1 Release | sed 's/.*se \(.*\) u.*/\1/'"
sha1sums=('8dcce930ab97450d532e478c1af02849f1ab4284')

build() {
	Fcd
	Fconf --with-libSDL_image=/usr/
	jam || return 1
	jam -sDESTDIR=$Fdestdir install
}

# optimization OK
