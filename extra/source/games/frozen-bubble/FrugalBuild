# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=frozen-bubble
pkgver=1.0.0
pkgrel=1
pkgdesc="Full-featured, colorful animated penguin eyecandy"
url="http://www.frozen-bubble.org/"
license="GPL2"
up2date="lynx -dump $url/downloads/ | grep -m 1 tarball | cut -d ' ' -f 10 | cut -d '-' -f 3 | sed 's|.tar.bz2||'"
source=(http://zarb.org/~gc/fb/$pkgname-$pkgver.tar.bz2)
md5sums=('2be5ead2aee72adc3fb643630a774b59')
groups=('games-extra')
archs=('i686')
depends=('perl-sdl')

build()
{
	Fsed '/usr/local' '$(DESTDIR)/usr' Makefile
	Fbuild
	Frm /usr/lib/perl5/?.?.?
	for i in $Fdestdir/usr/lib/perl5/site_perl/?.?.? ; do
		if [ -d $i ] ; then
			mv $i $Fdestdir/usr/lib/perl5/site_perl/current || return 1
		fi
	done
	find $Fdestdir/usr/lib/perl5/site_perl/current -name .packlist -exec rm {} \;
}

# optimalization OK - noarch

