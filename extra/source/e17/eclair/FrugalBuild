pkgname=eclair
pkgver=20051103
pkgrel=1
pkgdesc="Eclair is a media player for E17."
url="http://enlightenment.freedesktop.org"
depends=('emotion' 'esmart' 'taglib' 'sqlite3')
groups=('e17-extra' 'e17-apps')
archs=('i686')
source=($pkgname-$pkgver.tar.gz)
up2date=20051103
sha1sums=('3b8e89f0cfed6d871e86015c637da2b6f1eb237e')

build() {
	Fcd $pkgname
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
}

