pkgname=emotion
pkgver=20051120
pkgrel=1
pkgdesc="Emotion is an Evas smart-object library providing video capabilities for E17."
url="http://www.get-e.org"
depends=('edje' 'libxml2' 'xine-lib' 'gstreamer' 'glib2' 'popt')
groups=('e17-extra' 'e17-misc')
archs=('i686')
source=($pkgname-$pkgver.tar.gz)
Finclude e17
sha1sums=('950dbc68a55bf064c9f38877ddae62df824f24c8')

build() {
	Fcd $pkgname
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
}

