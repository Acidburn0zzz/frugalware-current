pkgname=emotion
pkgver=20051103
pkgrel=1
pkgdesc="Emotion is an Evas smart-object library providing video capabilities for E17."
url="http://enlightenment.freedesktop.org"
depends=('edje' 'libxml2' 'gstreamer' 'xine-lib' 'glib2' 'popt')
groups=('e17-extra' 'e17-core')
archs=('i686')
source=($pkgname-$pkgver.tar.gz)
up2date=20051103
sha1sums=('5358a157c968a2c7d8fe02edeaf99c052f2b357d')

build() {
	Fcd $pkgname
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
}

