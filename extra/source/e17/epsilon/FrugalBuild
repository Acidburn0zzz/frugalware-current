pkgname=epsilon
pkgver=20051120
pkgrel=1
pkgdesc="Epsilon is a flexable and powerful image thumbnailing library for E17."
url="http://www.get-e.org"
depends=('edje' 'epeg' 'imlib2')
groups=('e17-extra' 'e17-core')
archs=('i686')
source=($pkgname-$pkgver.tar.gz)
Finclude e17
sha1sums=('9e7195e655f2e8ed9b67071bc933ad10f738f009')

build() {
	Fcd $pkgname
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
}

