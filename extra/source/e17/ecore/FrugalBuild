pkgname=ecore
pkgver=20051120
pkgrel=1
pkgdesc="Ecore is the core event abstraction layer for E17"
url="http://www.get-e.org"
depends=('evas' 'openssl')
groups=('e17-extra' 'e17-core')
archs=('i686')
source=($pkgname-$pkgver.tar.gz)
Finclude e17
sha1sums=('f3e3749c49c1c8e77d5922a6fff3149acf255a22')

build() {
	Fcd $pkgname
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
}

