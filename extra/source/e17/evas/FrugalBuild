pkgname=evas
pkgver=20060103
pkgrel=1
pkgdesc="Evas is a hardware-accelerated canvas API for E17"
url="http://www.get-e.org"
depends=('freetype2' 'eet' 'x' 'edb')
groups=('e17-extra' 'e17-core')
archs=('i686')
source=($pkgname-$pkgver.tar.gz)
Finclude e17
sha1sums=('8377a48266c6484962973a06a75dd8c4fb8b9822')

build() {
	Fcd $pkgname
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
}

