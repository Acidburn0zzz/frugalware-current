pkgname=entrance
pkgver=20051103
pkgrel=2
pkgdesc="Entrance is a login manager for E17."
url="http://www.get-e.org"
depends=('edje' 'esmart')
groups=('e17-extra' 'e17-apps')
archs=('i686')
source=($pkgname-$pkgver.tar.gz session_config.patch0)
up2date=20051103
sha1sums=('130bbf08e3b39813a35f1bd49de8011bcddec398' \
	'81acfdf0d855d770c8e09fd61743760c417cc7f7')

build() {
	Fcd $pkgname
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
	Frm /etc/init.d
	Frm /etc/pam.d
}

