pkgname=entrance
pkgver=20060103
Finclude e17
pkgrel=1
pkgdesc="Entrance is a login manager for E17."
url="http://www.get-e.org"
depends=('edje' 'imlib2' 'esmart')
groups=('e17-extra' 'e17-apps')
archs=('i686')
source=($pkgname-$pkgver.tar.gz session_config.patch0)
sha1sums=('1104fb66d66b49e3d09f31829b2163061e445bfe' \
	'6ce351cfb7884dd8aa70ed4fc8c64aa2dc81b7eb')

build() {
	Fcd $pkgname
	export NOCONFIGURE="yes"
	./autogen.sh
	Fbuild
	Frm /etc/init.d
	Frm /etc/pam.d
}

