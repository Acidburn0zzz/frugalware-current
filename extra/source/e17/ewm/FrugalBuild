# Last modified: Mon, 22 May 2006 13:29:03 +0200
# Compiling time: ~0.73 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=ewm
pkgver=0.16.999.027
pkgrel=1
pkgdesc="Enlightenment is the window manager for E17."
depends=('edje')
rodepends=('xorg-server' 'edb')
groups=('e17-extra' 'e17-apps')
archs=('i686' 'x86_64')
conflicts=('enlightenment')
Finclude e17
up2date="lynx -dump $url |grep =enlightenment |sed -e 's/.*enlightenment-\(.*\).t.*/\1/' |Fsort |sed -n '$ p'"
source=($url/files/enlightenment-$pkgver.tar.gz)
sha1sums=('73b8e4ebc7386df0105f76623e4ccc25db18477d')

build() {
	Fcd enlightenment-$pkgver
	Fbuild
	Fmkdir /etc/X11/sessions
	Fmv /usr/share/xsessions/enlightenment.desktop /etc/X11/sessions/
	Frm /usr/share/xsessions
}

# optimization OK
