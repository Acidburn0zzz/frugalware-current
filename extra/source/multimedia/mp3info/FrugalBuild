pkgname=mp3info
pkgver=0.8.4
pkgrel=1
pkgdesc="An MP3 technical info viewer and ID3 1.x tag editor"
url="http://www.ibiblio.org/mp3info/"
groups=('multimedia-extra')
archs=('i686')
depends=('ncurses')
makedepends=('gtk+')
up2date="lynx -dump http://www.ibiblio.org/mp3info/ | grep Source | sed 's/.*mp3info-\([0-9\.]\+\)\.tgz/\1/'"
source=(ftp://ftp.ibiblio.org/pub/linux/apps/sound/mp3-utils/$pkgname/$pkgname-$pkgver.tgz gcc3.patch)
sha1sums=('a291aa1c3c216f838f85c1148adbb69f7bf31d80' \
          '2c3d46ef58d16cec0281d20a750a901761f02013')
license="GPL2"

build()
{
	Fsed '^prefix=/usr/local$' 'prefix=/usr' Makefile
	Fmkdir /usr/bin /usr/man/man1
	Fbuild
}

