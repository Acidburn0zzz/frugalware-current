# Compiling Time: 0.28 SBU
# Maintainer: Tuxbubling <tuxbubling@tiscali.fr>

pkgname=lives
pkgver=0.9.1
pkgrel=1
pkgdesc="LiVES is a powerful video system aimed at the digital video artist and VJ."
url="http://www.xs4all.nl/~salsaman/lives/"
depends=('mplayer' 'imagemagick' 'gtk+2' 'libjpeg' 'sox' 'transcode' 'mjpegtools' 'xmms')
groups=('multimedia-extra')
archs=('i686')
up2date="lynx -dump http://freshmeat.net/projects/lives/|grep 'LiVES-[0-9*].*src.tar.bz2'|sed -ne 's/.*S-//;s/-src.*//;1 p'"
source=(http://freshmeat.net/redir/lives/33678/url_bz2/LiVES-$pkgver-src.tar.bz2)
sha1sums=('ca11b06289368c30f32f32277987c0b88ee5ae84')

build()
{
	Fcd LiVES-$pkgver
	Fbuild
	Fmv usr/share/doc/LiVES-$pkgver usr/share/doc/$pkgname-$pkgver
	Frm usr/bin/lives
	Fln /usr/bin/lives-exe usr/bin/lives
}
# vim: ft=sh
# optimalization OK
