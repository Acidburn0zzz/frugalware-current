pkgname=lives
pkgver=0.9.5
pkgrel=1
pkgdesc="LiVES is a powerful video system aimed at the digital video artist and VJ."
url="http://www.xs4all.nl/~salsaman/lives/"
depends=('mplayer' 'imagemagick' 'gtk+2' 'libjpeg' 'sox' 'transcode' 'mjpegtools' 'xmms')
groups=('multimedia-extra')
options=('scriptlet')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('2ce953acc4cfa3d23a44ae77b04fd100493673e1')

build()
{
	Fcd
	## nono kill this shit befor Fbuild :-D
	for noo3 in `find . -name "Makefile*"`
	do
		Fsed '-O3' '' $noo3
	done
	Fbuild
	Frm usr/bin/lives
	Fln /usr/bin/lives-exe usr/bin/lives
}

# optimization OK
