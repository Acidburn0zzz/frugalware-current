pkgname=qc-usb
pkgver=0.6.3
pkgrel=1
pkgdesc="fixme"
url="fixme"
Finclude kernel-module
groups=('multimedia-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=12924|grep qc-usb |sed 's/[^]]*][^]]*]\([^ ]*\) .*/\1/;q'"
source=(http://dl.sourceforge.net/sourceforge/qce-ga/qc-usb-$pkgver.tar.gz \
	qc-usb-0.6.3-2616.diff)
sha1sums=('5583ab73c4cc8546fde78e5a29fe1b6482075a74' \
	  'f096d3c32a413f7b6d02763624b11975d5525c3a')

build()
{
	Fcheckkernel
	Fpatchall
	make all || return 1
	Ffilerel /lib/modules/`uname -r`/kernel/drivers/usb/misc/quickcam.ko
}
