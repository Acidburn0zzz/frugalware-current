pkgname=xmms2
pkgver=20060706
_pkgver=0.2DrEvil
pkgrel=1
pkgdesc="complete rewrite of the popular music player"
url="http://xmms2.xmms.org/"
depends=('alsa-lib' 'libmad' 'libvorbis' 'curl' 'faad2' \
		'flac' 'libmpcdec' 'jack')
makedepends=('scons' 'python' 'glib2' 'sqlite3')
groups=('multimedia-extra')
archs=('i686' 'x86_64')
up2date=$pkgver
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$_pkgver.tar.bz2)
sha1sums=('c18b2f9451e0b432354c0efbd98dc62a284feed8')

build()
{
	Fcd $pkgname-$_pkgver
	
	scons CONFIG=1
	scons CCFLAGS="$CFLAGS" PREFIX=/usr || exit 1
	scons INSTALLDIR=$Fdestdir install || exit 1
}

# optimization OK
