pkgname=xmms2
pkgver=20060327
_pkgver=0.2DrDolittle
pkgrel=1
pkgdesc="complete rewrite of the popular music player"
url="http://xmms2.xmms.org/"
depends=('alsa-lib' 'libmad' 'libvorbis' 'curl' 'faad2' \
		'flac' 'libmpcdec' 'jack')
makedepends=('scons' 'python' 'glib2' 'sqlite3')
groups=('multimedia-extra')
archs=('i686' 'x86_64')
up2date=$pkgver
source=(http://mesh.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$_pkgver.tar.bz2)
sha1sums=('e075af40a770167b2fd130cb969982d5fa0ccf02')

build()
{
	Fcd $pkgname-$_pkgver
	
	scons CONFIG=1
	scons CCFLAGS="$CFLAGS" PREFIX=/usr || exit 1
	scons INSTALLDIR=$Fdestdir install || exit 1
}

# optimalization OK
