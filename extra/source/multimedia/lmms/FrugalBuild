pkgname=lmms
pkgver=0.2.0
pkgrel=1
pkgdesc="Linux MultiMedia Studio."
depends=('sdl_sound' 'jack' 'libsamplerate' 'qt')
options=('scriptlet')
groups=('multimedia-extra')
archs=('i686')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
source=(${source[@]} $pkgname.desktop)
sha1sums=('410647c860d140769ed1c56bb8a794cb2594658b' \
          'e358deec83c86e46a679c3fa94c91ddf0eaaf903')
build()
{
	Fbuild
	Ffilerel ../$pkgname.desktop  /usr/share/applications/$pkgname.desktop
}
# optimization OK
