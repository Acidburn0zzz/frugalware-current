
post_install()
{
	echo -e "==> Change your LastFM username and password in /etc/lastfmsubmitd.conf"
	echo -e "==> before starting the LastFM submit daemon. After adding"
	echo -e "==> your username and password, run the following commands:"
	echo -e "==> sudo service lastfmsubmitd start"
	echo -e "==> sudo service lastmp start"
	true
}

post_upgrade()
{
	echo -e "==> Change your LastFM username and password in /etc/lastfmsubmitd.conf"
	echo -e "==> before starting the LastFM submit daemon. After adding"
	echo -e "==> your username and password, run the following commands:"
	echo -e "==> sudo service lastfmsubmitd start"
	echo -e "==> sudo service lastmp start"
	true
}

op=$1
shift
$op $*
