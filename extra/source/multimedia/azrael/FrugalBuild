pkgname=azrael
pkgver=0.3.4
pkgrel=1
pkgdesc="A client for the brand new XMMS2 written in C using gtk2"
url="https://sourceforge.net/projects/azrael/"
depends=('xmms2' 'gtk+2')
groups=('multimedia-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=155647 | grep -m1 tar.bz2 | sed 's/.*-\(.*\).tar.*/\1/'"
source=(http://mesh.dl.sourceforge.net/sourceforge/azrael/$pkgname-$pkgver.tar.bz2)
sha1sums=('17eeef17ebae67f74ed512fe4235671af47dd864')

build()
{
	Fcd $pkgname
	Fmake
	Fmkdir usr/bin
	make DESTDIR=$Fdestdir/usr/bin install
}

# optimalization OK
