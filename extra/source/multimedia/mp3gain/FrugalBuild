pkgname=mp3gain
pkgver=1.4.6
pkgrel=1
pkgdesc="MP3gain"
url="mp3gain.sourceforge.net"
depends=('glibc')
groups=('multimedia-extra')
archs=('i686')
Finclude sourceforge
source=(http://mesh.dl.sourceforge.net/$pkgname/$pkgname-${pkgver//./_}-src.zip)
sha1sums=('733ec64172087181c749c7434d774b804ce2e448')

build() {
	cd $Fsrcdir
  	make || return 1
 	Fmkdir usr/bin
  	make INSTALL_PATH=$Fdestdir/usr/bin install
}

# optimization OK
