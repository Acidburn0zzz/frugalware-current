pkgname=streamripper
pkgver=1.61.11
pkgrel=1
pkgdesc="Lets you record streaming mp3 to your hard drive."
url="http://streamripper.sourceforge.net/"
depends=('libmad' 'libvorbis')
groups=('multimedia-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/projects/streamripper|grep unix|sed 's/.*]\([0-9\.]*\).*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('16c0ecc367cff640fdf1147019a51a72b93c8fbe')

build()
{
	Fbuild --with-included-tre
}

