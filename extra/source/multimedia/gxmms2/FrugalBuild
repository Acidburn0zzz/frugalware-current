pkgname=gxmms2
pkgver=0.6.2
pkgrel=1
pkgdesc="GTK2 based XMMS2 client, written in C"
url="http://wejp.mooo.com/wejp/xmms2/"
license="GPL"
depends=('xmms2' 'gtk+2' 'gkrellm')
groups=('multimedia-extra')
archs=('i686')
up2date="lynx -dump http://wejp.mooo.com/wejp/xmms2/ | grep -m1 tar.gz$ | sed -n 's/.*-\(.*\).t.*/\1/;$ p'"
source=("http://wejp.mooo.com/wejp/xmms2/$pkgname-$pkgver.tar.gz")
sha1sums=('2a9c90dea5ce709ef7dd5f91459843a3c6b74554')

build()
{
	Fcd
	Fsed "PREFIX=/usr/local" "PREFIX=$Fdestdir/usr" Makefile
	Fsed "KRELLPREFIX=/usr" "KRELLPREFIX=$Fdestdir/usr" Makefile
	Fmake
	Fmakeinstall

	# install the gkrellm plugin
	Fmkdir usr/lib
	cp gkrellxmms2.so $Fdestdir/usr/lib  
}

# optimalization OK
