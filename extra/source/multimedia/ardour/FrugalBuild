# Last Modified: Sun, 25 Sep 2005 23:06:24 +0200
# Compiling Time: 3.01 SBU
# Maintainer: Tuxbubling <tuxbubling@tiscali.fr>

pkgname=ardour
pkgver=0.9beta30
pkgrel=1
pkgdesc="Ardour is a digital audio workstation."
url="http://ardour.org/"
depends=('gtk+' 'jack' 'liblrdf' 'libsamplerate' 'libxslt' 'libart_lgpl')
makedepends=('scons')
groups=('multimedia-extra')
archs=('i686')
up2date="lynx -dump http://ardour.org/download.php | grep -o 'ardour-[0-9a-z\.]\+\.tar\.bz2' | sed -ne 's/.*-//;s/\.tar.*$//;1 p'"
source=(http://ardour.org/releases/$pkgname-$pkgver.tar.bz2)
sha1sums=('bc91d2293f14b89a28b6e17743e9d907891f5ef9')

build()
{
	Fcd
	Fsed "\"-O3\"" "\"\"" SConstruct
	scons PREFIX=/usr ARCH="$CFLAGS"
	scons DESTDIR=$Fdestdir/ install
}

# vim: ft=sh
# optimalization no-arch
