pkgname=vamps
pkgver=0.98
pkgrel=1
pkgdesc="a dvd shrinking binary for linux"
url="http://vamps.sourceforge.net/"
license="GPL"
depends=('libdvdcss' 'libdvdnav' 'libdvdread' 'libdvdplay')
archs=('i686')
groups=('multimedia-extra')
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=130986|grep ']Vamps'|sed 's/[^]]*][^]]*]\([^ ]*\) .*/\1/;q'"
source=(${source[@]} $pkgname-$pkgver-{libdvdread,cflags,makefile}.diff)
sha1sums=('855217a0ba1a3fccd3ce36136a9d35c222252a1c' \
	  'c8d16358f88e5732efd691d90bb5631ad8d52b1b' \
	  '1676d24c51b9233604da2fc310d685e76104d167' \
	  '1b1ac2a9153ae16dd4d7c801add3fc47e54c4102')

build()
{
	Fpatchall
	Fmake
	make PREFIX=$Fdestdir/usr install || return 1
}

