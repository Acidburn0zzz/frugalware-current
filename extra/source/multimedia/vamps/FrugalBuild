pkgname=vamps
pkgver=0.97
pkgrel=1
pkgdesc="a dvd shrinking binary for linux"
url="http://k9copy.free.fr"
license="GPL"
depends=('libdvdcss' 'libdvdnav' 'libdvdread' 'libdvdplay')
archs=('i686')
groups=('multimedia-extra')
up2date="lynx -dump $url/downloads.php|grep $pkgname-[0-9\.]*\.tar.gz|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('de49a33216dafa9f42a274f8f2f11d2a0c80c023')

build()
{
	Fmake
	Fexerel usr/bin/vamps
	Fexerel usr/bin/play_cell
}

# optimalization ok
