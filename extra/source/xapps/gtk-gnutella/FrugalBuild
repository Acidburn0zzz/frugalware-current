# Fixed by Miklos Nemeth <desco@frugalware.org>
# Last Modified : 10/05/2005
# Compiling Time : 2min
# gtk-gntella will be automatically updated after a successfull build


pkgname=gtk-gnutella
pkgver=0.96.1
pkgrel=1
pkgdesc="Gtk-Gnutella is a clone of Gnutella"
depends=('gtk+2' 'glib2' 'libxml2')
archs=('i686' 'x86_64')
source=(http://ovh.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('28540c4e78f4c3513ac15b95228a98d17ace2091')
url="http://gtk-gnutella.sourceforge.net/"
groups=('xapps-extra')
up2date=`lynx -dump http://sourceforge.net/project/showfiles.php?group_id=4467|grep Latest.*No|sed 's/.*]\([0-9\.]*\) .*N.*/\1/'`
build() {
  cd $startdir/src/$pkgname-$pkgver
  ./Configure -Dccflags="$CFLAGS" -Dprefix=/usr -Dprivlib=/usr/share/gtk-gnutella -Dofficial=true -Dgtkversion=2 -ders -U y
  make || return 1
  make install INSTALL_PREFIX=$startdir/pkg
}
#vim: ft=sh


# optimalization OK
