# Last Modified: Thu, 19 May 2005 18:11:54 +0200
# Compiling Time: ~3 minute
# Maintainer: Marcus Habermehl [BMH1980] <bmh1980de@yahoo.de>

pkgname=dvdstyler
pkgver=1.4
pkgrel=1
pkgdesc="DVDStyler is a crossplatform dvd authoring system."
url="http://dvdstyler.sourceforge.net/"
depends=('dvdauthor' 'mpgtx' 'wxgtk')
up2date="lynx -dump http://dvdstyler.sourceforge.net/downloads.html | grep Source | head -n 1 | cut -d ' ' -f 9 | cut -d '-' -f 2 | sed 's|.tar.gz||'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/DVDStyler-$pkgver.tar.gz)
md5sums=('2e8ee561c56cf968516bc3e7cf20e96f')
license="GPL"
groups=(xapps-extra)
archs=('i686')

build()
{
    Fcd DVDStyler-$pkgver
    Fconf
    Fmake
    echo "StartupNotify=true" >> install.win32/$pkgname.desktop
    echo "OnlyShowIn=KDE" >> install.win32/$pkgname.desktop
    Fmakeinstall
    Frm /usr/share/doc/$pkgname
    Fmkdir /usr/share/applications /usr/share/pixmaps
    Ffilerel install.win32/$pkgname.desktop /usr/share/applications/$pkgname.desktop
    Ffilerel src/rc/$pkgname.xpm /usr/share/pixmaps/$pkgname.xpm
    Fsed KDE GNOME $startdir/pkg/usr/share/applications/$pkgname.desktop
}

# vim: ft=sh
