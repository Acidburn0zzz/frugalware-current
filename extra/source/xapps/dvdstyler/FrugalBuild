# Last Modified: Sat, 26 Mar 2005 22:35:13 +0100
# Compiling Time: ~3 minute
# Maintainer: Marcus Habermehl [BMH1980] <bmh1980de@yahoo.de>

pkgname=dvdstyler
pkgver=1.31
pkgrel=1
pkgdesc="DVDStyler is a crossplatform dvd authoring system."
url="http://dvdstyler.sourceforge.net/"
depends=('dvdauthor' 'mpgtx' 'wxgtk')
up2date=`lynx -dump http://dvdstyler.sourceforge.net/downloads.html | grep Source | head -n 1 | cut -d " " -f 9 | cut -d "-" -f 2 | sed 's|.tar.gz||'`
source=(http://mesh.dl.sourceforge.net/sourceforge/$pkgname/DVDStyler-$pkgver.tar.gz)
md5sums=('149503a58c3ef25a1882e9a53c15a9b8')
license="GPL"
groups=(xapps)

build() {
    cd $startdir/src/DVDStyler-$pkgver

    ./configure --prefix=/usr
    make
    make DESTDIR=$startdir/pkg install

    mkdir -vp $startdir/pkg/usr/share/applications
    install -m 644 -o root -g root install.win32/dvdstyler.desktop \
	$startdir/pkg/usr/share/applications/dvdstyler.desktop

    echo "StartupNotify=true" >> \
	$startdir/pkg/usr/share/applications/dvdstyler.desktop
    echo "Categories=Application;AudioVideo;" >> \
	$startdir/pkg/usr/share/applications/dvdstyler.desktop

    mkdir -vp $startdir/pkg/usr/share/pixmaps
    install -m 644 -o root -g root src/rc/dvdstyler.xpm \
	$startdir/pkg/usr/share/pixmaps/dvdstyler.xpm
}

# vim: ft=sh
