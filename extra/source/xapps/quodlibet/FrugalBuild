pkgname=quodlibet
pkgver=0.21.1
pkgrel=1
pkgdesc="QuodLibet is a GTK+ based audio player written in Python"
url="http://www.sacredchao.net/quodlibet/wiki"
makedepends=('intltool')
depends=('gtk+2' 'pygtk' 'mutagen' 'pyvorbis' 'pymad' 'gst-python' 'gnome-python-extras' 'python-ctypes')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url/Download | grep -m1 latest | sed 's/.*is \(.*\), .*/\1/'"
source=(http://www.sacredchao.net/~piman/software/$pkgname-$pkgver.tar.gz)
sha1sums=('c0e4d0dcc8a97a2b1095eff814356167b62723ba')

build() {
	Fcd
	Fsed '/share/man/man1' '/man/man1' Makefile
	make extensions || return 1
	make PREFIX=/usr DESTDIR=$Fdestdir install
}

# optimization OK
