# Last Modified: Thu, 16 Feb 2006 20:37:07 +0100
# Compiling Time: 0.03 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=nerolinux
pkgver=2.0.0.5
pkgrel=1
pkgdesc="Nero for Linux"
url="http://www.nero.com"
license="Nero EULA"
up2date="lynx -dump $url/eng/nerolinux-prog.php?pak=12 | grep -o -m1 'nerolinux.*.rpm' | cut -d - -f 2"
source=(ftp://ftp4.us.nero.com/$pkgname-$pkgver-x86.rpm)
sha1sums=('cbf5de19cbcc2b3fd0437fc258c38fa8f70ac05b')
groups=('xapps-extra')
archs=('i686')
rodepends=('gtk+')
makedepends=('cpio' 'rpm')
nobuild=1

build()
{
	Fmkdir /usr/{bin,lib} /usr/share/{applications,doc,pixmaps}
	Fmkdir /usr/share/nero/{desktop,docs,pixmaps,sounds}
	rpm2cpio $Fsrcdir/$pkgname-$pkgver-x86.rpm > $Fsrcdir/tmp.cpio || Fdie
	( cd $Fdestdir ; cpio -i < $Fsrcdir/tmp.cpio ) || Fdie
	rm -f $Fsrcdir/tmp.cpio || Fdie
	Fln /usr/share/nero/docs /usr/share/doc/$pkgname-$pkgver
	sed 's/^Categories.*/Categories=Application;AudioVideo;/' \
	    $Fdestdir/usr/share/nero/desktop/NeroLINUX.template > \
	    $Fdestdir/usr/share/applications/$pkgname.desktop || Fdie
	echo -e "Icon=$pkgname.png\nExec=nero" >> \
	        $Fdestdir/usr/share/applications/$pkgname.desktop || Fdie
	Fln /usr/share/nero/pixmaps/nero.png /usr/share/pixmaps/nero.png
}

# vim: ft=sh
