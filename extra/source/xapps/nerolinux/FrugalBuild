# Last Modified: Sun, 14 Aug 2005 00:48:08 +0200
# Compiling Time: ~0.09 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=nerolinux
pkgver=2.0.0.2
pkgrel=2
pkgdesc="Nero for Linux"
url="http://www.nero.com"
license="Nero EULA"
up2date="lynx -dump $url/eng/nerolinux-prog.php?pak=12 | grep -o -m1 'nerolinux.*.rpm' | cut -d - -f 2"
source=(ftp://ftp5.us.nero.com/$pkgname-$pkgver-x86.rpm)
sha1sums=('528963ff46ff88c9377c75b2c35f608cf07f59ef')
groups=('xapps-extra')
archs=('i686')
depends=('gtk+')
makedepends=('cpio' 'rpm')
nobuild=1

build()
{
	Fcd ""
	Fmkdir /usr/{bin,lib} /usr/share/nero/{desktop,docs,pixmaps,sounds}
	Fmkdir /usr/share/{applications,pixmaps}
	rpm2cpio `basename ${source[0]}` > $pkgname-$pkgver.cpio || return 1
	cd $Fdestdir || return 1
	cpio -ivI $Fsrcdir/$pkgname-$pkgver.cpio || return 1
	Fdocrel usr/share/nero/docs/*
	grep -v ^Categories usr/share/nero/desktop/NeroLINUX.template > usr/share/applications/$pkgname.desktop || return 1
	echo "Icon=$pkgname.png" >> usr/share/applications/$pkgname.desktop
	echo "Exec=nero" >> usr/share/applications/$pkgname.desktop
	echo "Categories=Application;AudioVideo;" >> usr/share/applications/$pkgname.desktop
	Ffilerel usr/share/nero/pixmaps/nero.png /usr/share/pixmaps/nero.png
}

# vim: ft=sh
