# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=firefox-adblock
extname=adblock
extid=34274bf4-1d97-a289-e984-17e546307e4f
pkgver=0.5.2.039
realver=`echo $pkgver |sed 's/\([0-9].[0-9]\).*/\1-dev/'`
pkgrel=1
pkgdesc="Filters ads from web-pages"
url="http://adblock.mozdev.org/"
depends=('firefox>=1.5')
groups=('xapps-extra' 'firefox-extensions')
archs=('i686')
up2date="lynx -dump $url/update.rdf |grep :version|sed -n 's/.*>\(.*\)<.*/\1/;2 p'"
source=(http://downloads.mozdev.org/adblock/$extname-$realver.xpi \
	chrome.manifest)
sha1sums=('5008993d2dc572510a235b95b770ab6c41e5a048' \
	  '8a13e97e0107aa9b552870a5eb568072c0d0d0d5')

Finclude firefox-extension
build()
{
	mv $extname-$realver.xpi $extname-$pkgver.xpi
	Fxpiinstall
	# allow to work with newer firefox versions, too
	Fsed '\.10+' '10.0' \
		$Fdestdir/usr/lib/firefox/extensions/\{$extid\}/install.rdf
}

# vim: ft=sh
