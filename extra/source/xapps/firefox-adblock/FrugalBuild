pkgname=firefox-adblock
extname=adblock
extid=34274bf4-1d97-a289-e984-17e546307e4f
pkgver=0.5.2.056
pkgrel=1
pkgdesc="Filters ads from web-pages"
url="https://addons.mozilla.org/extensions/moreinfo.php?id=10"
depends=('firefox>=1.5')
groups=('xapps-extra' 'firefox-extensions')
archs=('i686')
up2date="elinks -dump $url |grep xpi$|sed 's/.*k-\(.*\)-.*/\1/'"
source=(http://releases.mozilla.org/pub/mozilla.org/extensions/$extname/$extname-$pkgver-fx+fl+mz+ns.xpi \
	# yes the manifest file contains ^Ms, if you don't like them, mail the author ;-)
	chrome.manifest)
sha1sums=('5637853d39064748049fa3527549d83a9caed86c' \
	  'b90584e52a6b01c31582134d54d6a93be1d1eef1')

Finclude firefox-extension
build()
{
	mv $extname-$pkgver-fx+fl+mz+ns.xpi $extname-$pkgver.xpi
	Fxpiinstall
}

