# Last modified: Fri, 28 Oct 2005 18:01:08 +0200
# Compiling time: 1.35 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=xmule
pkgver=1.12.0
pkgrel=1
pkgdesc="The Multiplatform Fork of the xMule Client | Inspiring P2P for Geeks"
url="http://www.xmule.ws"
license="GPL"
depends=('glib' 'gtk+2' 'wxgtk>=2.6.0' 'zlib' 'wget')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url/|grep xmule.*.tar.bz2|sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2 \
	ed2k.protocol)
sha1sums=('71d400169a5a6f03cd4b60344a71096f1f583d1f' \
	  '5226282278b9c34344c0da75c97f393b43a8c797')

build()
{
	Fbuild
	
	# Install icon for the menu file.
	Ffilerel /usr/share/pixmaps/$pkgname.xpm
	Fln /usr/share/pixmaps/$pkgname.xpm \
		/opt/kde/share/icons/hicolor/48x48/apps/$pkgname.xpm

	# Install menu file.
	Ffilerel /usr/share/applications/$pkgname.desktop

	# Install KDE ed2k protocol 
	Ffile /usr/share/services/ed2k.protocol
}

# optimalization OK

# vim: ft=sh
