# Last modified: Thu, 09 Feb 2006 23:16:04 +0100
# Compiling time: 1.35 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=xmule
pkgver=1.13.5b
pkgrel=1
pkgdesc="The Multiplatform Fork of the xMule Client | Inspiring P2P for Geeks"
url="http://www.xmule.ws"
license="GPL"
depends=('glib' 'gtk+2' 'wxgtk>=2.6.0' 'zlib' 'wget')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url/|grep xmule.*.tar.bz2|sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2	ed2k.protocol patched.diff)
sha1sums=('227b2266438b7e58bac8b905e0b5523a2d13b1b5' \
	  '5226282278b9c34344c0da75c97f393b43a8c797' \
	  '5176c87f1035dea2282acc04e88364c1ba1922ca')

build()
{
	Fcd $pkgname-1.13.5/
	Fbuild
	
	# Install icon for the menu file.
	Ficonrel $pkgname.xpm

	# Install menu file.
	Fdesktop "$pkgname" "$pkgname.xpm" "Network;"

	# Install KDE ed2k protocol 
	Ffile /usr/share/services/ed2k.protocol
}

# optimalization OK
