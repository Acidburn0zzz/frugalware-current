# Last Modified: Wed, 14 Jun 2006 16:13:58 +0200
# Compiling Time: 0.03 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=kqemu
pkgver=1.3.0pre8
pkgrel=1
pkgdesc="QEMU Accelerator Module"
url="http://fabrice.bellard.free.fr/qemu/"
depends=('qemu')
makedepends=('kernel-source')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url/download.html|grep kqemu.*gz$|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=($url/kqemu-$pkgver.tar.gz)
options=('nobuild')

build()
{
	Fsed '\(./install.sh\)' '#\1' Makefile
	Fmake --kernel-path=/lib/modules/`uname -r`/build
	Ffilerel /lib/modules/`uname -r`/misc/kqemu.ko
	Fmkdir /etc/udev/rules.d/
	echo 'KERNEL=="kqemu*", NAME="%k", GROUP="users", MODE="0660"' \
		> $Fdestdir/etc/udev/rules.d/48-qemu.rules
}
sha1sums=('7a982102e14c2f0a9e3d4e8ca517682ef4b91232')
