post_install()
{
	/sbin/depmod -a
	/sbin/modprobe kqemu major=0
	if ! grep -q kqemu /etc/sysconfig/modules; then
		echo 'kqemu "major=0"' >>/etc/sysconfig/modules
	fi
}

post_upgrade()
{
	post_install
}

post_remove()
{
	/sbin/depmod -a
	sed '/^kqemu/d' -i /etc/sysconfig/modules
}

op=$1
shift

$op $*
