# Last Modified: Thu, 21 Apr 2005 18:17:48 +0200
# Compiling Time: ~1 hour
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=eclipse
pkgver=3.0.2
pkgrel=1
pkgdesc="A kind of universal tool platform - an open extensible IDE."
url="http://eclipse.org/"
depends=('libgnomeui' 'nss')
makedepends=('apache-ant')
groups=('xapps-extra')
up2date="lynx -dump http://download.eclipse.org/eclipse/downloads/|grep Release|sed -n 's/.*]\([0-9\.]*\) .*/\1/;1 p'"
source=(http://download.eclipse.org/eclipse/downloads/drops/R-3.0.2-200503110845/eclipse-sourceBuild-srcIncluded-3.0.2.zip eclipse.sh)
# lynx -dump http://download.eclipse.org/downloads/drops/R-3.0.2-200503110845/checksum/eclipse-sourceBuild-srcIncluded-3.0.2.zip.md5
md5sums=('1e2e595469af58245781f17075495389' '89a95969a459592f20562e1e650bb8e8')

build()
{
	Fcd ""
	
	./build -os linux -ws gtk -arch x86 
	
	Fmkdir /usr/lib/
	Ffile result/linux-gtk-x86-sdk.zip /usr/lib/
	cd $Fdestdir/usr/lib
	unzip -qqo linux-gtk-x86-sdk.zip
	rm linux-gtk-x86-sdk.zip
	Fdocrel $pkgname/readme/readme_eclipse.html
	Frm /usr/lib/eclipse/readme
	Fexe /etc/profile.d/$pkgname.sh
}

# vim: ft=sh
