pkgname=gproftpd
pkgver=8.2.2
pkgrel=1
pkgdesc="GProftpd is a fast and easy to use GTK+ administration tool for the Proftpd standalone server."
url="http://mange.dynup.net/linux.html"
license="GPL"
depends=('proftpd>=1.2.10' 'gtk+2' 'gnome-vfs')
archs=('i686')
groups=('xapps-extra')
up2date="lynx -dump $url|grep $pkgname-[0-9\.]*\.tar.gz|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://mange.dynalias.org/linux/gproftpd/$pkgname-$pkgver.tar.gz desktop.patch)
sha1sums=('f51a41629de9f1d6607b6b37b7e7c5a66bea747d' \
          '22180be918e938e8549c2f399c1b66204ad98c80')

build ()
{
    Fbuild
    Ffilerel desktop/net-gproftpd.desktop /usr/share/applications/gproftpd.desktop
    Frm /usr/share/doc/gproftpd
}

# optimalization OK

