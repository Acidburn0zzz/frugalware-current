pkgname=rdt
pkgver=0.7.0
pkgrel=1
pkgdesc="The Ruby Development Tool is a Ruby IDE, composed of Ruby aware features/plugins for the Eclipse platform."
url="http://sourceforge.net/projects/rubyeclipse"
depends=('eclipse' 'ruby')
groups=('xapps-extra')
archs=('i686')
source=(http://heanet.dl.sourceforge.net/rubyeclipse/org.rubypeople.rdt-"$pkgver".601192300PRD.zip)
up2date='lynx -dump "http://sourceforge.net/project/showfiles.php?group_id=50233" | grep "\][0-9.]* \[\[" | head -n 1 | sed "s/.*\]\(.*\) \[.*/\1/"'

build() {
	Fmkdir /usr/lib/eclipse
	cp -R {features,plugins} $Fdestdir/usr/lib/eclipse
}

