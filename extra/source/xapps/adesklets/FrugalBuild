pkgname=adesklets
pkgver=0.4.11
pkgrel=1
pkgdesc="Adesklets is an interactive Imlib2 console for the X Window system."
url="http://adesklets.sourceforge.net/"
depends=('imlib2' 'readline' 'python')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=126227 | grep adesklets-[0-9\.]*tar.bz2 | sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://mesh.dl.sourceforge.net/sourceforge/adesklets/$pkgname-$pkgver.tar.bz2)
sha1sums=('a8453d96ec270e97b25540db6810754c60302596')

build()
{
	Fmkdir usr/share/doc/$pkgname-$pkgver
	Fbuild
	Fmv usr/info usr/share/doc/$pkgname-$pkgver
}

# optimalization ok
