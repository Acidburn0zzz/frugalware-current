pkgname=amule
pkgver=2.0.3
pkgrel=7
pkgdesc="aMule is a file-sharing program, connects to eDonkey2000 network."
url="http://www.amule.org/"
depends=('wxgtk' 'binutils')
conflicts=('xmule')
up2date="lynx -dump $url/files/files.php?cat=6 | grep Latest | tail -n 1 | cut -d ' ' -f 10"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/aMule-$pkgver.tar.gz)
sha1sums=('a9ee36cd30a0e5747817d3ccb7eef81203261007')
license="GPL2"
groups=('xapps-extra')
install=$pkgname.install
archs=('i686' 'x86_64')

build()
{
	Fcd aMule-$pkgver
	Fbuild
}

# optimalization OK

