pkgname=amule
pkgver=2.1.1
pkgrel=1
pkgdesc="aMule is a file-sharing program, connects to eDonkey2000 network."
url="http://www.amule.org/"
depends=('wxgtk' 'libxxf86vm' 'binutils')
conflicts=('xmule')
up2date="lynx -dump $url/files/files.php?cat=6 | grep Latest | tail -n 1 | cut -d ' ' -f 10"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/aMule-$pkgver.tar.bz2)
sha1sums=('dd2e48a13cf7260f327364f293eda0d90832048e')
license="GPL2"
groups=('xapps-extra')
archs=('i686' 'x86_64')

build()
{
	Fcd aMule-$pkgver
	Fbuild
}

