pkgname=bluez-pin
pkgver=0.25
pkgrel=1
pkgdesc="Bluetooth PIN helper with D-BUS support"
url="http://bluez.sf.net/"
depends=('glibc' 'dbus>=0.23.3' 'bluez-libs=2.17')
groups=('xapps-extra')
archs=('i686')
up2date=`lynx -dump http://www.bluez.org/download.html|grep "bluez-pin-"|sed -n 's/.*bluez-pin-\(.*\)\.t.*/\1/; 1 p'`
source=(ftp://gpe.handhelds.org/projects/gpe/source/$pkgname-$pkgver.tar.gz)
md5sums=('6f3c368ddef1d6cb8dced822bc5242b2')

build()
{
	Fsed '/usr/local' '/usr' Makefile
	Fsed '$(PREFIX)/etc' '/etc' Makefile
	Fbuild || return 1
}

# optimalization ok

