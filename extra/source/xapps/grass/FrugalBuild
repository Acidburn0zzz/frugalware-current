# Last modified: Mon, 17 Oct 2005 00:30:08 +0200
# Compiling time: 1.91 SBU
# Maintainer: Janny <janny@frugalware.org>

pkgname=grass
pkgver=6.0.1
pkgrel=1
pkgdesc="GRASS - Geographic Resources Analysis Support System"
url="http://grass.itc.it"
license="GPL"
depends=('gdal' 'tcl' 'tk' 'freetype2')
makedepends=('bison' 'flex' 'libjpeg' 'libpng' 'ncurses' 'zlib' 'proj' 'fftw')
archs=('i686')
groups=('xapps-extra')
up2date="lynx -dump $url/download/ |grep $pkgname-[0-9\.]*\.tar.gz$ |sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://grass.itc.it/grass60/source/$pkgname-$pkgver.tar.gz)
sha1sums=('7faa22d1ac3e2272c12a82e284d2e3a8819b31ca')

build() {
	Fbuild --prefix=$Fdestdir/usr --bindir=$Fdestdir/usr/bin \
	--enable-shared --with-cxx --with-gdal=/usr/bin/gdal-config \
	--with-postgres=no --without-odbc --with-fftw --with-nls \
	--with-freetype --with-freetype-includes=/usr/include/freetype2 --without-fftw
	Fsed "GISBASE=.*$" "GISBASE=/usr/grass-$pkgver" $Fdestdir/usr/bin/grass60
}

# optimalization ok

