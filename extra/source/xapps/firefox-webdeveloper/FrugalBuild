pkgname=firefox-webdeveloper
extname=webdeveloper
extid=c45c406e-ab73-11d8-be73-000a95be3b12
pkgver=1.0.2
pkgrel=1
pkgdesc="Adds a menu and a toolbar with various web developer tools."
url="http://chrispederick.com/work/firefox/webdeveloper/"
rodepends=('firefox>=1.5')
groups=('xapps-extra' 'firefox-extensions')
archs=('i686')
up2date="lynx -dump $url/update_localized.rdf |grep :version|sed -n 's/.*>\(.*\)<.*/\1/;1 p'"
source=($url/${extname}_localized.xpi chrome.manifest)
sha1sums=('2fe5d1409e1cbecfe6a8b8131af08d8f22df9616' \
	  'cb5856ee7144270e1b659866aa76416ccdf2f432')
Finclude firefox-extension

build()
{
	mv ${extname}_localized.xpi $extname-$pkgver.xpi
	Fxpiinstall
}
