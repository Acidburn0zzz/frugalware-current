# Last Modified: Sat, 02 Jul 2005 14:45:09 +0200
# Compiling Time: ~0.01 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=frugalware-super-user
pkgname2=`echo $pkgname | tr - _`
pkgver=0.1
pkgrel=1
pkgdesc="PyGTK frontend for su"
license="GPL2"
up2date="$pkgver"
source=($pkgname-$pkgver.tar.gz)
md5sums=('6ed15fdccf367fe5d396ddd52ebe46e0')
groups=('xapps-extra')
archs=('i686')
depends=('pexpect' 'pygtk')
conflicts=('gksu')
provides=('gksu')

build()
{
	Fcd
	Fsed "'.'" "'/usr/share/$pkgname'" $pkgname
	Fsed "'locale'" "'/usr/share/locale'" $pkgname
	Fsed "$pkgname.glade" "/usr/share/$pkgname/$pkgname.glade" $pkgname2.py
	python -c "import $pkgname2"
	Fmkdir /usr/bin /usr/share/$pkgname
	Fmkdir /usr/share/locale/{de_DE,hu_HU}/LC_MESSAGES
	Fexerel $pkgname /usr/bin
	Fln /usr/bin/$pkgname /usr/bin/gksu
	Fln /usr/bin/$pkgname /usr/bin/fwsu
	Ffilerel $pkgname.glade $pkgname2.pyc /usr/share/$pkgname/
	msgfmt de.po -o $Fdestdir/usr/share/locale/de_DE/LC_MESSAGES/$pkgname.mo
	msgfmt hu.po -o $Fdestdir/usr/share/locale/hu_HU/LC_MESSAGES/$pkgname.mo
}

# optimalization OK - noarch

# vim: ft=sh
