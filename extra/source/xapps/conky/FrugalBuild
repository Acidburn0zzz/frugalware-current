# Last Modified: Sun, 04 Sep 2005 16:44:50 +0200
# Compiling Time: 0.07 SBU
# Maintainer: Tuxbubling <tuxbubling@tiscali.fr>

pkgname=conky
pkgver=1.3
extraver=0
pkgrel=1
pkgdesc="Light-weight system monitor."
url="http://conky.sourceforge.net/"
#depends=('x')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://conky.sourceforge.net/ | grep latest | sed -ne '1 p' | sed 's/.*is //;s/.$//'"
source=(http://dl.sourceforge.net/conky/$pkgname-$pkgver.$extraver.tar.bz2)
sha1sums=('04d211c9f52549dce552c09bbaedae51852dfaa5')

build()
{
	Fcd $pkgname-$pkgver.$extraver
	Fmkdir usr/doc/$pkgname-$pkgver
	Fbuild --enable-xft --enable-proc-uptime --enable-double-buffer --enable-own-window
	mv doc/ $Fdestdir/usr/doc/$pkgname-$pkgver
}
# vim: ft=sh
# optimalization no-arch
