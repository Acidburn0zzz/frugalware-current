# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=ipodder
pkgver=2.1.1
pkgrel=1
pkgdesc="The cross-platform podcast receiver."
url="http://ipodder.sourceforge.net"
depends=('wxpython')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/projects/ipodder|grep iPodder-linux|sed 's/.*x \([0-9\.]*\) .*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/ipodder/iPodder-linux-$pkgver.tar.bz2)
sha1sums=('83df9ec07cfdb359d8e79c0bcf41a156b7f93265')

_prefix=/usr/lib/ipodder

build()
{
	Fcd iPodder-linux
	Fmkdir $_prefix /usr/bin
	Fsed '/opt/iPodder' "$_prefix" iPodder.sh
	Fsed "$pkgver" "'$pkgver'" iPodderGui.py
	chmod 644 ipodder/grabbers.py
	cp -f -R * $Fdestdir/$_prefix
	Fln $_prefix/iPodder.sh /usr/bin/ipodder
	Ffilerel /usr/share/applications/iPodder.desktop
	Frm $_prefix/build
}

# optimalization ok - noarch

# vim: ft=sh
