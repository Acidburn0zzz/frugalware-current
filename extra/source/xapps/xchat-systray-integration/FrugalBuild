pkgname=xchat-systray-integration
pkgver=2.4.5
pkgrel=1
pkgdesc="Systray integration for xchat"
url="http://www.blight.tk/"
depends=('xchat')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=88437 | grep systray-plugin- | sed -ne 's/.*-\(.*\)\.t.*/\1/;s/systray-plugin-//;1 p' | cut -f 11 -d ' '"
source=(http://dl.sourceforge.net/sourceforge/xchat2-plugins/$pkgname-$pkgver-src.tar.gz)
md5sums=('f7068053ff7cc63d5bf2fd8cfabe0c82')

build()
{
	Fmake
	Fmkdir usr/lib/xchat/plugins/
	Fexerel usr/lib/xchat/plugins/systray.so
	cp -r src/images/* $Fdestdir/usr/lib/xchat/plugins/
	strip -s $Fdestdir/usr/lib/xchat/plugins/systray.so
}

