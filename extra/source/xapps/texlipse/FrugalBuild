pkgname=texlipse
pkgver=1.0.5
pkgrel=1
pkgdesc="TeXlipse is a plugin that adds Latex support to the Eclipse IDE."
url="http://texlipse.sourceforge.net/"
depends=('eclipse' 'tetex')
groups=('xapps-extra')
archs=('i686')
source=(http://download.sourceforge.net/texlipse/net.sourceforge.texlipse_${pkgver}_src.zip)
up2date='lynx -dump "http://sourceforge.net/project/showfiles.php?group_id=133306" | grep texlipse.*.zip | head -n 1 | sed "s/.*texlipse_\([0-9.]\+\)_src.zip.*/\1/"'
sha1sums=('50349008acdc2e27e7c466fa88f548d0600c5101')

build() {
        Fmkdir /usr/lib/eclipse
        cp -R plugins $Fdestdir/usr/lib/eclipse
}

