# Last Modified: Mon, 06 Feb 2006 02:18:03 +0100
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=bochs
pkgver=2.2.6
pkgrel=1
pkgdesc="A highly portable open source IA-32 (x86) PC emulator."
url="http://bochs.sourceforge.net/"
depends=('sdl')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep -1 Current|sed -n 's/.*s \(.*\)/\1/;3 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('ce62142c5b6f38afd43f92c90241daef75e3ea08')

[ "$CARCH" == "x86_64" ] && Fconfopts="$Fconfopts --enable-sse=2 --enable-3dnow --enable-x86-64"

build() {
	Fbuild --with-sdl --enable-plugins
	Fmv usr/share/doc/$pkgname usr/share/doc/$pkgname-$pkgver
}

# optimalization ok
