# Last Modified: Sun, 10 Jul 2005 16:35:58 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=bochs
pkgver=2.2.1
pkgrel=1
pkgdesc="A highly portable open source IA-32 (x86) PC emulator."
url="http://bochs.sourceforge.net/"
depends=('sdl')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep -1 Current|sed -n 's/.*s \(.*\)/\1/;3 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('50484c75d8175fcd97a81432ac18fb71')
[ "$CARCH" == "x86_64" ] && amd64opts=" --enable-sse=2 --enable-3dnow --enable-x86-64 "


build() {
	Fbuild --with-sdl --enable-plugins $amd64opts
	Fmv usr/share/doc/$pkgname usr/share/doc/$pkgname-$pkgver
}

# optimalization ok

# vim: ft=sh
