pkgver=2.20
pkgrel=1
pkgdesc="Bluetooth tools and daemons"
url="http://bluez.sf.net/"
depends=('glibc' 'dbus>=0.23.3' 'bluez-libs=2.20')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date=`lynx -dump http://www.bluez.org/download.html|grep "bluez-utils-"|sed -n 's/.*bluez-utils-\(.*\)\.t.*/\1/; 1 p'`
source=($url/download/bluez-utils-$pkgver.tar.gz)
sha1sums=('2a05aa36c6c6983e37fae66d2aefecae1c7cb9af')

