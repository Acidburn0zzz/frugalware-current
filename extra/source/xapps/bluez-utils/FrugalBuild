pkgname=bluez-utils
pkgver=2.18
pkgrel=1
pkgdesc="Bluetooth tools and daemons"
url="http://bluez.sf.net/"
depends=('glibc' 'dbus>=0.23.3' 'bluez-libs=2.18')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date=`lynx -dump http://www.bluez.org/download.html|grep "bluez-utils-"|sed -n 's/.*bluez-utils-\(.*\)\.t.*/\1/; 1 p'`
source=($url/download/bluez-utils-$pkgver.tar.gz)
md5sums=('9c6a20f96971833a8fee3877158f175f')

build()
{
	Fbuild --sysconfdir=/etc || return 1
}

# optimalization ok

