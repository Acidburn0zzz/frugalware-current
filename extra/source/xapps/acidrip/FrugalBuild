pkgname=acidrip
pkgver=0.14
pkgrel=1
pkgdesc="AcidRip is a Gtk2::Perl  application for ripping and encoding DVD's."
url="http://untrepid.com/acidrip/"
license="GPL2"
up2date="lynx -dump $url | grep Current | cut -d ' ' -f 7"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('c1c27bbf658e5c30f43e067a8ae283de')
groups=('xapps-extra')
archs=('i686')
depends=('perl-gtk2')

build()
{
	Fcd
	perl Makefile.PL PREFIX=/usr
	make
	Fmakeinstall
	Frm /usr/lib/perl5/5.8.7/i686-linux-thread-multi/perllocal.pod
}

# optimalization ok - noarch

