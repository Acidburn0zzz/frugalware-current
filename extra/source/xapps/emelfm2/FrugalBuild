pkgname=emelfm2
pkgver=0.1.1
pkgrel=1
pkgdesc="emelFM2 is a file manager that implements the popular two-pane design."
url="http://www.emelfm2.org/"
license="GPL2"
install=$pkgname.install
up2date="lynx -dump $url | grep -m 1 -o $pkgname.*tar.gz | cut -d '-' -f 2 | sed 's|.tar.gz||'"
source=(http://emelfm2.org/rel/$pkgname-$pkgver.tar.gz)
sha1sums=('e5b6843a41c44a86ef83520e328cf3a9c28a5a0e')
groups=('xapps-extra')
archs=('i686' 'x86_64')
depends=('gtk+2')

build()
{
	Fsed "PREFIX ?= /usr/local" 'PREFIX ?= $(DESTDIR)/usr' Makefile.config
	Fsed "CFLAGS += -Wall" "CFLAGS += -Wall $CFLAGS" Makefile.config
	Fmake
	# DESTDIR is here needed
	Fmakeinstall DESTDIR=$Fdestdir
}

# optimalization ok - i686

