pkgname=notecase
pkgver=1.1.4
pkgrel=1
pkgdesc="a hierarchical note manager (aka. outliner)"
url="http://notecase.sourceforge.net/"
depends=('gtk+2' 'gnome-vfs')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://notecase.sourceforge.net/ | grep 'version' | sed 's/.* \([0-9\.]\+\)$/\1/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver\_src.zip \
	$pkgname-$pkgver-extra_qualification_error_fix.diff)
sha1sums=('766082145eaa42dfcd1ececd5aa35671f1fde80b' \
	  '38698abe90c19e084e9cc1b53c291ced8a716363')

build() {
	Fcd
	patch -p1 -i $Fsrcdir/$pkgname-$pkgver-extra_qualification_error_fix.diff
	make
	Fmakeinstall
}

# optimization OK
