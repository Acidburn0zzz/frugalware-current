# Last Modified: Thu, 09 Jun 2005 00:45:30 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=ooextras
pkgver=20050216
pkgrel=1
pkgdesc="OOExtras: Extra Templates for OpenOffice.org!"
url="http://ooextras.sourceforge.net/"
depends=('openoffice.org')
groups=('xapps-extra')
archs=('i686' '!x86_64')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/ooextras/?sort_by=date&sort=desc' |grep tgz$|sed -n 's/.*s\(.*\)\.tgz/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname$pkgver.tgz \
	README.Frugalware)
sha1sums=('1304a43b3ef0cea2687e9634d92aacbaee0dd1c4' \
          'c0951747ea247824a329e26416a8dd5678b4d0e9')


build()
{
	Fmkdir /usr/lib/$pkgname
	cp -R downloads $Fdestdir/usr/lib/$pkgname/
	Fdoc README.Frugalware
}

# vim: ft=sh
