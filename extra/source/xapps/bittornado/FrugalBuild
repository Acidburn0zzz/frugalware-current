pkgname=bittornado
pkgver=0.3.14
pkgrel=1
pkgdesc="Experimental bittorrent client"
url="http://www.bittornado.com/"
depends=('wxpython')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://www.bittornado.com/download.html | grep 'http.*tar\.gz' | sed 's/.*-\([0-9\.]\+\)\.tar.*/\1/;q'"
source=(http://download2.bittornado.com/download/BitTornado-$pkgver.tar.gz)
sha1sums=('44e850fecb9cd6c933086dadaff208df9be59a6e')

build()
{
	Fcd BitTornado-CVS
	Fbuild
}

# optimalization OK - noarch
