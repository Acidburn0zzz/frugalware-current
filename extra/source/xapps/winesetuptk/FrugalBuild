# Last Modified: Wed, 26 Oct 2005 00:57:56 +0200
# Compiling Time: 0.19 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=winesetuptk
pkgver=0.73
origver=`echo $pkgver|sed 's/\./-/'`
pkgrel=1
pkgdesc="A setup tool for WiNE"
url="http://www.winehq.org"
depends=('wine')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://prdownloads.sourceforge.net/wine|grep $pkgname.*bz2$|sed 's/.*k-\(.*\)\.t.*/\1/;s/-/./'"
source=(http://download.sourceforge.net/wine/$pkgname-$origver.tar.bz2 \
	$pkgname-$pkgver-perms.patch)
sha1sums=('dd32e0d413248cf3bf08cce1ee0f4eaf838298d6' \
	  '0fca571eca03e4350288611eb65e703f95686bf5')

build()
{
	Fcd $pkgname$pkgver
	Fpatchall
	cd tcltk-$pkgname-$pkgver
	./build.sh || return 1

	cd ../$pkgname-$pkgver
	Fmake --localstatedir=/var/lib --enable-curses \
		--with-tcltk=$Fsrcdir/$pkgname$pkgver/tcltk-$pkgname-$pkgver \
		--with-launcher=/usr/bin --with-exe=/usr/bin
	make PREFIX_LAUNCHER=$Fdestdir/usr/bin PREFIX_EXE=$Fdestdir/usr/bin \
		install || return 1
	Fdocrel doc/{CHANGELOG.TXT,README.TXT,license.txt}
}

# optimalization OK

# vim: ft=sh
