# Last Modified: Thu, 04 May 2006 18:04:30 +0200
# Compiling Time: 4.89 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=audacity
pkgver=1.3.0b
pkgrel=1
pkgdesc="A program that lets you manipulate digital audio waveforms"
url="http://audacity.sourceforge.net/"
depends=('wxgtk' 'libvorbis' 'libid3tag' 'libmad' 'libogg')
makedepends=('zip')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://prdownloads.sourceforge.net/audacity/|grep src-|Flasttar"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-src-$pkgver.tar.gz \
	audacity-1.3.0b-gcc41.diff)
sha1sums=('6ba57ee1a3a9b6c57bf98142fbe4561b7cadf5db' \
	  '8880ed07e4a38905afcfa3e34400a3db78a1a111')

build()
{
	Fcd $pkgname-src-$pkgver-beta
	Fcd $pkgname
	Fbuild --with-portaudio=v18 || return 1
}

# optimization OK
