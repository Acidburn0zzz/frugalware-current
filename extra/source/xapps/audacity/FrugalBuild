pkgname=audacity
pkgver=20050519
pkgrel=1
pkgdesc="A program that lets you manipulate digital audio waveforms"
url="http://audacity.sourceforge.net/"
depends=('wxgtk' 'libvorbis' 'libid3tag' 'libmad' 'libogg')
makedepends=('zip')
groups=('xapps-extra')
# up2date="lynx -dump $url|grep 'Download '|sed 's/.* \([0-9\.]*\)$/\1/'"
# source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-src-$pkgver.tar.gz)
up2date="lynx -dump 'http://ftp.frugalware.org/pub/other/$pkgname/?C=M;O=D'|grep bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://ftp.frugalware.org/pub/other/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('17cb03e687cc6ec1762077e52dc8e6fa')

build()
{
	# Fcd $pkgname-src-$pkgver
	Fcd $pkgname
	Fbuild --with-portaudio=v18 || return 1
}

