pkgname=wxglade
pkgver=0.4.1
pythonver=`python -V 2>&1|sed 's/.* \(.\..\)\../\1/'`
pkgrel=1
pkgdesc="Glade like GUI designer for wxWidgets"
url="http://wxglade.sf.net/"
depends=('wxpython')
groups=('xapps-extra')
archs=('x86_64' 'i686')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=58225 |grep wxGlade-[0-9\.]*.tar.gz |sed -n 's/.*-\([0-9\.]*\)\.t.*/\1/; 1 p'"
source=(http://ovh.dl.sourceforge.net/sourceforge/$pkgname/wxGlade-$pkgver.tar.gz \
	wxglade.xpm)
sha1sums=('5955872b1d868a92733afc1f8bc328d81ba3c2e5' \
	  'b1f5b576a55cf8de6a9131b85e510b230c05c4e0')


build()
{
	Fmkdir /usr/lib/python$pythonver/site-packages/wxglade
	Fmkdir /usr/share/pixmaps
	cp -a $Fsrcdir/wxGlade-$pkgver/* $Fdestdir/usr/lib/python$pythonver/site-packages/wxglade
	Fdesktop "/usr/lib/python$pythonver/site-packages/wxglade/wxglade.py" "wxglade.xpm" "Development;"
	cp -a wxglade.xpm $Fdestdir/usr/share/pixmaps
}

# optimalization ok
