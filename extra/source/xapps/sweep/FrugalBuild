pkgname=sweep
pkgver=0.9.1
pkgrel=1
pkgdesc="Sweep is an audio editor and live playback tool."
url="http://www.metadecks.org/software/sweep/index.html"
depends=('gtk+2' 'atk' 'libsamplerate' 'freetype2' 'pango' 'libvorbis' 'speex' 'libmad')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('b30b629386eba002011ef10e04bdfc2a47e5add9')

build()
{
	Fbuild --enable-alsa --with-gnu-ld --disable-nls
}

# optimization OK
