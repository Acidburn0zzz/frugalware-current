pkgname=xarchiver
pkgver=0.3.2
pkgrel=1
pkgdesc="A lightweight GTK2 only frontend to zip, bzip2, gzip, rar, 7z, arj and rpm"
url="http://xarchiver.xfce.org"	
depends=('gtk+2' 'gzip' 'bzip2' 'tar')
groups=('xapps-extra')
archs=('i686')
_F_sourceforge_ext=.tar.bz2
Finclude sourceforge
install=xarchiver.install
sha1sums=('8067f302af2f2fdf2c81c808ed4442ae2bbb2ef5')

build() 
{
	Fcd Xarchiver-$pkgver/src
	cd ..
	Fconf
	Fmake
	Fmakeinstall
}

# optimization OK
