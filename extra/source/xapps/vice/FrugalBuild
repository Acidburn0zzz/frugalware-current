pkgname=vice
pkgver=1.19
pkgrel=1
pkgdesc="Versatile Commodore Emulator."
url="http://www.viceteam.org/"
depends=('esd' 'libxv' 'libstdc++' 'readline' 'libxaw' 'libpng' 'libxt' 'bdftopcf' 'mkfontdir')
makedepends=('xproto')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx --dump 'http://www.viceteam.org/' | grep tar.gz$ | sed -ne 's/.*vice-\(.*\)\.tar.gz/\1/;1 p'"
source=(ftp://ftp.zimmers.net/pub/cbm/crossplatform/emulators/VICE/$pkgname-$pkgver.tar.gz)
sha1sums=('8620d891fa9de29eb21e334f3c7c8254e89e80a9')

