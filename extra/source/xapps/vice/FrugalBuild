pkgname=vice
pkgver=1.16
pkgrel=3
pkgdesc="Versatile Commodore Emulator."
url="http://www.viceteam.org/"
depends=('glibc' 'esd' 'x' 'ncurses' 'audiofile' 'zlib' 'gcc' 'libpng' 'readline' 'alsa-lib')
groups=('xapps-extra')
archs=('i686' 'x86_64')
#conflicts=('withnothing')
up2date="lynx --dump 'http://www.viceteam.org/' | grep tar.gz$ | sed -ne 's/.*vice-\(.*\)\.tar.gz/\1/;1 p'"
source=(ftp://ftp.funet.fi/pub/cbm/crossplatform/emulators/VICE/$pkgname-$pkgver.tar.gz $pkgname-$pkgver-gcc4.patch0)
md5sums=('23848e7fe588b32549a5ce4ccf056207' '77b2578016e290d929d9b73d2557a266')

