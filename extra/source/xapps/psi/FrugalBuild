pkgname=psi
pkgver=0.9.3
pkgrel=1
pkgdesc="Psi - Jabber client"
url="http://psi.affinix.com"
license="GPL"
groups=('xapps-extra')
archs=('i686')
depends=('qca')
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('d20f3bb530235a246bc2d92308089744')
up2date="lynx -dump http://psi.affinix.com/?page=download | grep 'Download Psi 0.9.3' | sed 's/   Download Psi //'"

build() {
	Fcd
	./configure --prefix=$Fprefix
	Fmake
	Fmakeinstall INSTALL_ROOT=$Fdestdir
}

# optimalization OK

