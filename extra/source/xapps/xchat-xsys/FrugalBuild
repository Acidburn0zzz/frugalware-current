# Compiling Time: ~0.0000001 SBU :)
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=xchat-xsys
pkgver=2.0.5
pkgrel=2
pkgdesc="Sysinfo plugin for X-Chat."
url="http://mshoup.us/downloads/xsys/"
depends=('xchat')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=($url/xsys-$pkgver.tar.bz2 xsys-$pkgver-frugalware.diff xsys-$pkgver-pciidsfix.patch)
md5sums=('5f67c0746f25d611e02c075238905ef5' '4deb0a23061c40b75d6d28a6585c8c5c' \
	'308eb4aa1d50d7dd46d8f422bae223ab')

build()
{
	Fcd xsys-$pkgver
	Fpatchall || return 1
	
	make || return 1
	
	Ffilerel /usr/lib/xchat/plugins/xsys-$pkgver.so
}

# optimalization ok

