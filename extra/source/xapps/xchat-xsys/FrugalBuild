# Last Modified: Wed, 18 May 2005 12:43:52 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=xchat-xsys
pkgver=2.0.0
pkgrel=1
pkgdesc="Sysinfo plugin for X-Chat."
url="http://mshoup.us/downloads/xsys/"
depends=('xchat')
groups=('xapps-extra')
up2date="lynx -dump $url|grep tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=($url/xsys-$pkgver.tar.bz2)
md5sums=('a0c8726e3486807086d79c5fdd576126')

build()
{
	Fcd xsys-$pkgver
	Fsed '/sbin/lspci' '/usr/sbin/lspci' Makefile
	
	make || return 1
	
	Ffilerel /usr/lib/xchat/plugins/xsys-$pkgver.so
}

# optimalization ok

