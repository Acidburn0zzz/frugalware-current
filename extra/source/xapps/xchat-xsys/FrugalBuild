# Last Modified: Fri, 24 Jun 2005 10:01:51 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=xchat-xsys
pkgver=2.0.5
pkgrel=1
pkgdesc="Sysinfo plugin for X-Chat."
url="http://mshoup.us/downloads/xsys/"
depends=('xchat')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url|grep tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=($url/xsys-$pkgver.tar.bz2 xsys-$pkgver-frugalware.diff)
md5sums=('5f67c0746f25d611e02c075238905ef5' '4deb0a23061c40b75d6d28a6585c8c5c')

build()
{
	Fcd xsys-$pkgver
	Fpatchall
	Fsed '/sbin/lspci' '/usr/sbin/lspci' Makefile
	
	make || return 1
	
	Ffilerel /usr/lib/xchat/plugins/xsys-$pkgver.so
}

# optimalization ok

