# Last Modified: Fri, 15 Apr 2005 17:06:42 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=xchat-xsys
pkgver=1.9.3
pkgrel=1
pkgdesc="Sysinfo plugin for X-Chat."
url="http://mshoup.us/downloads/xsys/"
depends=('xchat')
groups=('xapps-extra')
up2date="lynx -dump $url|grep tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=($url/xsys-$pkgver.tar.bz2)
md5sums=('7a284ae9aea5f951e8e89e1c846848fb')

build()
{
	Fcd xsys2
	Fsed '/sbin/lspci' '/usr/sbin/lspci' Makefile
	
	make || return 1
	
	Ffilerel xsys-$pkgver.so /usr/lib/xchat/plugins/xsys-$pkgver.so
}

# vim: ft=sh
