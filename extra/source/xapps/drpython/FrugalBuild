pkgname=drpython
pkgver=161
pkgrel=1
pkgdesc="DrPython is a highly customizable, extensible editor/environment for developing programs written in the Python programming Language"
url="http://drpython.sourceforge.net/"
depends=('python' 'wxpython')
makedepends=('unzip')
groups=('xapps-extra')
archs=('i686')
_F_sourceforge_ext=.zip
Finclude sourceforge
sha1sums=('17ffa17d440e7e649ae507c3c5d4f6f1e824c928')

build(){
	Fbuild
	Frm /usr/bin/postinst.py
	echo "#!/bin/sh"  > $Fdestdir/usr/bin/drpython
	echo "python /usr/lib/python2.4/site-packages/drpython/drpython.py" >> $Fdestdir/usr/bin/drpython
	Ffileschmod /usr/bin/ 755
	Ficon drpython-161/bitmaps/drpython.png
	Fdesktop drpython drpython.png "Development;GTK;"
}
