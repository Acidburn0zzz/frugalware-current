# Last Modified: Mon, 09 May 2005 12:25:08 +0200
# Compiling Time: ~3 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=dosbox
pkgver=0.63
pkgrel=1
pkgdesc="PC emulator with builtin DOS for running DOS games"
url="http://dosbox.sourceforge.net/"
depends=('sdl' 'sdl_net' 'sdl_sound' 'libpng' 'alsa-lib' 'x')
groups=('xapps-extra')
up2date="lynx -dump 'http://prdownloads.sourceforge.net/dosbox/?sort_by=date&sort=desc'|grep dosbox-[0-9\.]*.tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('629413e41224ae9cdd115fdafd55cbdc')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
