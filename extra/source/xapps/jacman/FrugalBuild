# Last Modified: Wed, 03 Aug 2005 21:10:17 +0200
# Compiling Time: ~0.02 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=jacman
pkgver=0.2
pkgrel=2
pkgdesc="Java-based GUI front-end for pacman"
url="http://www.comp.leeds.ac.uk/andyr/software/jacman/"
license="Apache"
up2date="lynx -dump $url | grep -m 1 'jacman.*.jar' | cut -d ' ' -f 4"
source=(http://download.berlios.de/$pkgname/$pkgname-$pkgver.jar $pkgname \
	README.Frugalware)
sha1sums=('7bf6909c2d5ee43262e6c65856a8cce29095c7a2' \
          'ffde7b8d3cc2dee38d4edf7630924109d113bdd1' \
          'f07fe0521ad1600f96fb345d839707abfbf8504d')
groups=('xapps-extra')
archs=('i686')
depends=('j2re')

build()
{
	mkdir -p $pkgname-$pkgver || return 1
	(cd $pkgname-$pkgver ; jar xf $Fsrcdir/$pkgname-$pkgver.jar ) || return 1
	Fmkdir /usr/bin /usr/share/{java,jacman}
	for i in $pkgname-$pkgver/lib/*.jar ; do
		Ffile $i /usr/share/java/jacman/`basename $i`
	done
	rm -rf $pkgname-$pkgver/lib || return 1
	(cd $pkgname-$pkgver ; jar cf $pkgname-$pkgver.jar * ) || return 1
	Ffile $pkgname-$pkgver/$pkgname-$pkgver.jar /usr/share/jacman/
	Fexe $pkgname /usr/bin/$pkgname
	Fdoc README.Frugalware
	Fdoc $pkgname-$pkgver/{3rdparty_readme,changelog,manifest}.txt
}

# vim: ft=sh
