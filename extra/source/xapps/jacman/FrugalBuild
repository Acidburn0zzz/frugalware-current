# Last Modified: Tue, 02 Aug 2005 22:33:03 +0200
# Compiling Time: ~0.02 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=jacman
pkgver=0.2
pkgrel=1
pkgdesc="Java-based GUI front-end for pacman"
url="http://www.comp.leeds.ac.uk/andyr/software/jacman/"
license="Apache"
up2date="lynx -dump $url | grep -m 1 'jacman.*.jar' | cut -d ' ' -f 4"
source=(http://download.berlios.de/$pkgname/$pkgname-$pkgver.jar $pkgname.bin)
sha1sums=('7bf6909c2d5ee43262e6c65856a8cce29095c7a2' \
          'ffde7b8d3cc2dee38d4edf7630924109d113bdd1')
groups=('xapps-extra')
archs=('i686')
depends=('j2re')

build()
{
	Fmkdir /usr/share/java/jacman /usr/share/jacman /usr/bin
	jar xf $pkgname-$pkgver.jar || return 1
	Ffile lib/*.jar /usr/share/java/jacman/
	rm -rf jacman/lib || return 1
	jar cf $pkgname-$pkgver.jar * || return 1
	Ffile $pkgname-$pkgver.jar /usr/share/jacman/
	Fexe $pkgname.bin /usr/bin/$pkgname
}

# vim: ft=sh
