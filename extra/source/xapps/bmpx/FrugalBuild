pkgname=bmpx
pkgver=0.12.2
pkgrel=1
pkgdesc="BMPx is the codename for the next generation of BMP. Beep Media Player"
url="http://bmpx.berlios.de"
license="GPL"
depends=('libglade' 'atk' 'gamin' 'openssl' 'curl' 'taglib' 'pango' 'cairo' 'dbus' 'xine-lib')
archs=('i686')
groups=('xapps-extra')
up2date="lynx -dump http://bmpx.berlios.de/w/index.php/Downloads |grep $pkgname-[0-9\.]*\.tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.bz2)
sha1sums=('aa51f9e816ff7bacffb81d1b064faabd22c470ca')

build() {
	Fbuild
}

