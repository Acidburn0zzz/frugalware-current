pkgname=gnuplot
pkgver=4.0.0
pkgrel=1
pkgdesc="Gnuplot  is a portable command-line driven interactive data and function plotting utility."
url="http://www.gnuplot.info/"
depends=('libx11' 'readline' 'libpng')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump ftp://ftp.gnuplot.info/pub/gnuplot/ |grep .*gnuplot-4 |sed -ne 's/.*t-\(.*\).t.*/\1/;1 p'"
source=(ftp://ftp.gnuplot.info/pub/gnuplot/$pkgname-$pkgver.tar.gz)
sha1sums=('a862bc311724c263aa1ef1c646291d73dc37c978')
Fconfopts="$Fconfopts --with-x --with-readline=gnu"

# optimalization OK
