# Maintainer: Tuxbubling <tuxbubling@tiscali.fr>

pkgname=xarchive
pkgver=0.1.10
extrapkgver=1
pkgrel=1
pkgdesc="XArchive is a GTK+ front-end for command line archiving tools."
url="http://xarchive.sourceforge.net/"
depends=('gtk+2')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://xarchive.sourceforge.net/ | grep 'Latest Version' | sed 's/.* //;s/://'"
source=(http://ovh.dl.sourceforge.net/sourceforge/xarchive/$pkgname-$pkgver-$extrapkgver.tar.gz)
sha1sums=('a9b5549f75fa03ffe9a835cee143402a014da44f')

build()
{
	Fcd $pkgname-$pkgver-$extrapkgver

	# Adding *.fpm extention to bzip2 ext wrapper
	Fsed 'BZIP2_EXTS="tar.bz tbz tar.bz2 tbz2"' 'BZIP2_EXTS="tar.bz tbz tar.bz2 tbz2 fpm"' ./wrappers/tar-wrap.sh

	Fbuild
}

# optimalization OK
# vim: ft=sh
