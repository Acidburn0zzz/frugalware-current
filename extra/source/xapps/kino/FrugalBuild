# Last Modified: Wed, 09 Mar 2005 11:45:44 +0100
# Compiling Time: ~1 SBU
# Maintainer: voroskoi <voroskoi@freemail.hu>

pkgname=kino
pkgver=0.7.5
pkgrel=1
pkgdesc="A non-linear DV editor."
url="http://kino.schirmacher.de/"
depends=('esd' 'libgnomeui' 'fontconfig' 'openssl' 'libgnomecanvas' 'libdv' 'glib' 'libxml2' 'libavc1394' 'x' 'libsamplerate' 'libbonobo' 'gnome-vfs')
groups=('xapps-extra')
up2date=`lynx -dump http://kino.schirmacher.de/article/static/1 |grep kino.*tar |sed -n -e 's/.*o-\(.*\).t.*/\1/'  -e '1 p'`
source=(http://dl.sourceforge.net/sourceforge/kino/$pkgname-$pkgver.tar.gz)
md5sums=('592f90be63feb7e63940cedd68edcf79')

build() {
	mkdir -p $startdir/pkg/usr/share/pixmaps
	mkdir -p $startdir/pkg/usr/share/kino
	mkdir -p $startdir/pkg/etc/hotplug/usb
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr \
		--with-hotplug-script-dir=$startdir/pkg/etc/hotplug/usb \
		--with-hotplug-usermap-dir=$startdir/pkg/usr/share/kino
	make || return 1
	# optional self-test
	make check || return 1
	make prefix=$startdir/pkg/usr install
}

# vim: ft=sh
