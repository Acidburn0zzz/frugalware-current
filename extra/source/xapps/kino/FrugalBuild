# Last Modified: Mon, 17 Apr 2006 11:47:14 +0200
# Compiling Time: ~1.1 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=kino
pkgver=0.8.1
pkgrel=1
pkgdesc="A non-linear DV editor."
url="http://kino.schirmacher.de/"
makedepends=('perl-xml')
depends=('gtk+2>=2.6' 'expat' 'libstdc++' 'alsa-lib' 'libdv' 'libavc1394' 'libglade>=2.5' 'libxv' 'libsamplerate' 'libsm')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://kino.schirmacher.de/article/static/1 |grep kino.*tar |sed -n -e 's/.*o-\(.*\).t.*/\1/'  -e '1 p'"
source=(http://dl.sourceforge.net/sourceforge/kino/$pkgname-$pkgver.tar.gz)
sha1sums=('32f57dfe9a7cfafc3645776e25c76e744e0ad258')

build() {
	Fmkdir usr/share/pixmaps
	Fmkdir usr/share/kino
	Fmkdir etc/hotplug/usb
	Fmake	--with-hotplug-script-dir=/etc/hotplug/usb \
		--with-hotplug-usermap-dir=/usr/share/kino
	Fmakeinstall
}

# optimalization OK
