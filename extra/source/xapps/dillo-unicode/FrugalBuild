# Last Modified: Mon, 11 Jul 2005 22:59:54 +0200
# Compiling Time: ~0.18 SBU
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=dillo-unicode
pkgver=0.8.5_20050711_1
pkgrel=1
pkgdesc="Dillo aims to be a multi-platform browser alternative that's small, stable, developer-friendly, usable, fast, and extensible."
url="http://teki.jpn.ph/pc/software/"
depends=('heimdal' 'libjpeg' 'gtk+')
groups=('xapps-extra')
archs=('i686' 'x86_64')
conflicts=('dillo')
provides=('dillo')
up2date="lynx -dump http://teki.jpn.ph/pc/software/ | grep dillo.*tar.bz2 | head -n 1 | sed \"s/.*dillo-\(.*\)-i18n-misc-\(.*\)-\(.*\).tar.bz2.*/\1_\2_\3/\""
source=(http://teki.jpn.ph/pc/software/dillo-`echo $pkgver | sed "s/\(.*\)_\(.*\)_\(.*\)/\1-i18n-misc-\2-\3/"`.tar.bz2)
md5sums=('69765deed63ceca8701a544147919bf5')

build() {
	Fcd dillo-`echo $pkgver | sed "s/\(.*\)_\(.*\)_\(.*\)/\1-i18n-misc-\2-\3/"`
	Fbuild --sysconfdir=/etc/dillo
	Fdeststrip /etc/dillo/dpidrc
}

# vim: ft=sh

# optimalization OK
