# Last Modified: Fri, 13 May 2005 21:41:53 +0200
# Compiling Time: ~3 minute
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=xsane
pkgver=0.97
pkgrel=1
pkgdesc="XSane is a graphical scanning frontend for SANE (Scanner Access Now Easy)."
url="http://www.xsane.org/"
depends=('gimp' 'sane-backends')
up2date=`lynx -dump $url | grep $pkgname | grep source | head -n 1 | cut -d " " -f 4 | sed "s|$pkgname-||"`
source=($url/$pkgname-$pkgver.tar.gz $pkgname.desktop)
md5sums=('3d1f889d88c3462594febd53be58c561' 'cce96cc6e8c47f01675e13de8d63c43f')
license="GPL"
groups=(xapps-extra)
install=$pkgname.install

build()
{
    Fbuild || return 1

    Fmkdir /usr/share/applications \
	   /usr/share/icons/hicolor/16x16/apps \
	   /usr/share/icons/hicolor/32x32/apps \
           /opt/kde/share/applications/kde \
	   /opt/kde/share/icons/crystalsvg/16x16/apps \
	   /opt/kde/share/icons/crystalsvg/32x32/apps \
	   /opt/kde/share/icons/crystalsvg/48x48/apps

    Ffile $pkgname.desktop /usr/share/applications/$pkgname.desktop

    echo "OnlyShowIn=GNOME" >> \
	$startdir/pkg/usr/share/applications/$pkgname.desktop

    Ffile $pkgname.desktop /opt/kde/share/applications/kde/$pkgname.desktop

    echo "OnlyShowIn=KDE" >> \
	$startdir/pkg/opt/kde/share/applications/kde/$pkgname.desktop

    Ffilerel src/$pkgname-16x16.png \
	/usr/share/icons/hicolor/16x16/apps/$pkgname.png
    Ffilerel src/$pkgname-32x32.png \
	/usr/share/icons/hicolor/32x32/apps/$pkgname.png

    Ffilerel src/$pkgname-16x16.png \
	/opt/kde/share/icons/crystalsvg/16x16/apps/$pkgname.png
    Ffilerel src/$pkgname-32x32.png \
	/opt/kde/share/icons/crystalsvg/32x32/apps/$pkgname.png
    Ffilerel src/$pkgname-48x48.png \
	/opt/kde/share/icons/crystalsvg/48x48/apps/$pkgname.png

    Frm /usr/sbin
}

# vim: ft=sh
