# Last Modified: Thu, 02 Feb 2006 13:12:22 +0100
# Compiling Time: 0.18 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=xsane
pkgver=0.991
pkgrel=1
pkgdesc="XSane is a graphical scanning frontend for SANE (Scanner Access Now Easy)."
url="http://www.xsane.org/"
depends=('gtk+2' 'gimp' 'sane-backends')
up2date="lynx -dump $url |grep 'xsane'|grep -m1 'source'|sed 's/.*-\(.*\) s.*/\1/'"
source=($url/download/$pkgname-$pkgver.tar.gz $pkgname.desktop)
sha1sums=('22725e8a956955b75ac6791f69a3e9a4ae744ac7' \
          '8f9c4f5544cfc60e4c6e6ae7dcf857bcf7f66f40')
license="GPL 2"
groups=('xapps-extra')
archs=('i686' 'x86_64')

build()
{
	Fbuild
	Fmkdir /usr/lib/gimp/2.0 /usr/share/applications
	Ffile $pkgname.desktop /usr/share/applications
	Fmkdir /usr/share/icons/hicolor/{16x16,32x32}/apps
	Ffilerel src/$pkgname-16x16.png /usr/share/icons/hicolor/16x16/apps/$pkgname.png
	Ffilerel src/$pkgname-32x32.png /usr/share/icons/hicolor/32x32/apps/$pkgname.png
	Fln /usr/bin/xsane /usr/lib/gimp/2.0/plug-ins/xsane
}

# optimalization OK

# vim: ft=sh
