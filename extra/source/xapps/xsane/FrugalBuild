# Last Modified: Fri, 29 Jul 2005 21:47:41 +0200
# Compiling Time: ~0.4 SBU
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=xsane
pkgver=0.97
pkgrel=3
pkgdesc="XSane is a graphical scanning frontend for SANE (Scanner Access Now Easy)."
url="http://www.xsane.org/"
depends=('gtk+2' 'gimp' 'sane-backends')
up2date="lynx -dump $url | grep $pkgname | grep source | head -n 1 | cut -d \" \" -f 4 | sed \"s|$pkgname-||\""
source=($url/download/$pkgname-$pkgver.tar.gz $pkgname.desktop)
md5sums=('3d1f889d88c3462594febd53be58c561' 'cce96cc6e8c47f01675e13de8d63c43f')
license="GPL2"
groups=('xapps-extra')
archs=('i686')
install=$pkgname.install

build()
{
	Fbuild || return 1
	Fmkdir /usr/share/applications \
		/usr/share/icons/hicolor/16x16/apps \
		/usr/share/icons/hicolor/32x32/apps \
		/opt/kde/share/icons/crystalsvg/16x16/apps \
		/opt/kde/share/icons/crystalsvg/32x32/apps \
		/opt/kde/share/icons/crystalsvg/48x48/apps
	Ffile $pkgname.desktop /usr/share/applications
	Ffilerel src/$pkgname-16x16.png /usr/share/icons/hicolor/16x16/apps
	Ffilerel src/$pkgname-32x32.png /usr/share/icons/hicolor/32x32/apps
	Ffilerel src/$pkgname-16x16.png /opt/kde/share/icons/crystalsvg/16x16/apps
	Ffilerel src/$pkgname-32x32.png /opt/kde/share/icons/crystalsvg/32x32/apps
	Ffilerel src/$pkgname-48x48.png /opt/kde/share/icons/crystalsvg/48x48/apps
	Frm /usr/sbin
}

# optimalization OK

# vim: ft=sh
