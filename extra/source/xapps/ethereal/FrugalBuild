pkgname=ethereal
pkgver=0.99.0
pkgrel=1
pkgdesc="The world's most popular network protocol analyzer"
url="http://www.ethereal.com/"
depends=('heimdal' 'gtk+2' 'pcre' 'libpcap' 'gnutls')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.ethereal.com/ | grep released | sed 's/.*Ethereal \([0-9\.]\+\) released.*/\1/;q'"
source=(http://www.ethereal.com/distribution/$pkgname-$pkgver.tar.bz2)
sha1sums=('466299ac49f21904ed91b93e81667f226637e868')

build()
{
	Fbuild --with-ssl
}

