# Last modified: Sat, 10 Dec 2005 12:57:51 +0100
# Compiling time: ~45 minutes
# Maintainer: Bence Nagy <nagybence@tipogral.hu>

pkgname=scribus
pkgver=1.3.1
pkgrel=1
pkgdesc="A professional desktop publishing application"
url="http://www.scribus.org.uk"
depends=('cups' 'lcms' 'qt' 'libxml2' 'libart_lgpl' 'python')
groups=('xapps-extra')
archs=('i686' 'x86_64')
source=(http://download.sourceforge.net/scribus/$pkgname-$pkgver.tar.bz2 hyphenation-symlink.patch)
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=125235 | grep \"scribus-[0-9.]\+.tar.bz2\" | sed -n \"s/.*scribus-\([0-9.]\+\).tar.bz2.*/\1/; 1 p\""
sha1sums=('687bc262475496d103c4944f66c808bf5880383b' \
	  '4300e36b2117e380d8eec7ef420077dd9fd180e9')

build() {
	Fcd
	Fsed " \$(prefix)" " \$(DESTDIR)\$(prefix)" scribus/Makefile.in
	Fbuild --enable-cairo
	Fsed "scribusicon" "/usr/share/pixmaps/scribusicon.png" scribus.desktop
	Ffilerel /usr/share/applications/scribus.desktop
	# for Huhyphn
	Frm /usr/lib/scribus/dicts/hyph_hu.dic
}

# optimalization OK

