# Last Modified: Sat, 06 May 2006 01:45:28 +0530
# Compiling Time: 0.12 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=tea
pkgver=13.1
pkgrel=1
pkgdesc="TEA is a GTK2-based text editor for Linux and *BSD."
url="http://tea.linux.kiev.ua/"
license="GPL"
depends=('gtk+2' 'gtksourceview')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://tea.linux.kiev.ua/downloads.html | grep -m1 source | sed 's/.*A \(.*\).s.*/\1/'"
source=(http://tea.linux.kiev.ua/$pkgname-$pkgver.tar.bz2 tea.desktop)
sha1sums=('2bae2275b4bbf70548e5bfe6c8ef4c9ff2fb7d06' '9f6e1d789e5bfc701ea06a05b7481f766f9cafd5')

build() {
	Fcd
	Fbuild
	Fmkdir usr/share/applications/
	Fcpr tea.desktop usr/share/applications/
}

# optimization OK
