up2date="lynx -dump 'http://www.sodipodi.com/index.php3?section=download' | grep 'Sodipodi [0-9]' | sed -ne 's/re.*$//;s/Sodipodi //;s/ //;1 p'"
source=(http://dl.sourceforge.net/sodipodi/$pkgname-$pkgver.tar.gz)
