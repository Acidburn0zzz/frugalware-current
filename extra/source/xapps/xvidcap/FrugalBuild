pkgname=xvidcap
pkgver=1.1.3
pkgrel=1
pkgdesc="A program to capture a video of your X session"
url="http://xvidcap.sourceforge.net"
depends=('libx11' 'libxmu' 'libjpeg' 'libpng' 'libvorbis' 'ffmpeg')
makedepends=('gtk+2')
groups=('xapps-extra')
archs=('i686')
#up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=81535 | grep Latest |sed 's/ //g'|sed 's/Latest....//g'|sed 's/Re.*//g'|sed 's/hd.*//g'|sed 's/.....N.*//g'|sed -e '/^$/d'"
up2date=$pkgver
source=(http://kent.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz \
	xvidcap-1.1.3-ffmpeg-20050806.patch0)
sha1sums=('e6d86a4184c8cc3e74738fb6e20d49c0d1640025' \
	  'c134c46278751e523195b5429de3ba40bf3016ca')
subpkgs=('gvidcap')
subdescs=('GTK frontend to Xvidcap')
subdepends=('gtk+2 xvidcap')
subarchs=('i686')
subgroups=('gnome-extra')

build() {
	Fpatchall
	Fmake --with-gtk2 || return 1
	make prefix=$Fdestdir/usr install || return 1
	Fsplit gvidcap usr/man/man1/gvidcap.1 usr/bin/gvidcap || return 1
}

