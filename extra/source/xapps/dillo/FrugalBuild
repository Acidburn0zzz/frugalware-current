pkgname=dillo
pkgver=0.8.4
pkgrel=2
pkgdesc="Dillo aims to be a multi-platform browser alternative that's small, stable, developer-friendly, usable, fast, and extensible."
url="http://www.dillo.org"
depends=('glibc' 'openssl' 'glib' 'libjpeg' 'x' 'gtk+' 'zlib' 'libpng')
groups=('xapps-extra')
up2date=`lynx -dump http://dillo.org/download.html | grep "the latest one: "| cut -d " " -f 8 | cut -d "-" -f 2`
source=(http://www.dillo.org/download/dillo-0.8.4.tar.bz2)
md5sums=('ebf17d6cca1fccc8bc80acdf05e736a3')

build() {
    cd $startdir/src/$pkgname-$pkgver
    ./configure --prefix=$startdir/pkg/
    make
    make install
}

# vim: ft=sh

