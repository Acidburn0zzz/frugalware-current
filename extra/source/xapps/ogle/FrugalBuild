# Last Modified: Wed, 25 May 2005 19:47:58 +0200
# Compiling Time: ~1 minute
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=ogle
pkgver=0.9.2
pkgrel=1
pkgdesc="The first opensource DVD player to support DVD menus."
url="http://www.dtek.chalmers.se/groups/dvd/"
depends=('libmad' 'libjpeg' 'libdvdread' 'x' 'libxml2')
makdepends=('a52dec')
groups=('xapps-extra')
up2date="lynx -dump $url/dist/|grep 'ogle-[0-9\.]*.tar.gz$'|sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=($url/dist/$pkgname-$pkgver.tar.gz)
md5sums=('a76a9892bdb807a4bcf859d15a91f0f9')

build()
{
	Fbuild --sysconfdir=/etc --with-x || return 1
}

