pkgname=gst-plugins-ugly
pkgver=0.10.2
pkgrel=2
pkgdesc="Plugins for GStreamer (Ugly)"
url="http://gstreamer.freedesktop.org/"
depends=('gstreamer>=0.10.4' 'a52dec' 'lame' 'libmad' 'mpeg2dec' 'libdvdread' 'gst-plugins-base' 'libid3tag')
makedepends=('gtk-doc' 'pyxml')
groups=('gnome-extra' 'gnome-core')
archs=('i686')
install=$pkgname.install
source=(http://gstreamer.freedesktop.org/src/$pkgname/$pkgname-$pkgver.tar.bz2)
up2date="lynx -dump http://gstreamer.freedesktop.org/src/gst-plugins-ugly | Flasttar"
options=('scriptlet')
sha1sums=('8f19252d59732b3586d6f1a04d2f88dfac682d3e')

build() {
	[ "$CARCH" == "x86_64" ] && export CFLAGS="$CFLAGS -fPIC"
	Fmake --disable-schemas-install --enable-gtk-doc --disable-debug
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimalization OK
