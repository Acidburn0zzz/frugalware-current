post_install() {
	echo "updating mime database ..."
	update-mime-database usr/share/mime > /dev/null 2>&1
	echo "done."
	echo "updating desktop database ..."
	update-desktop-database > /dev/null 2>&1
	echo "done."
}

post_upgrade() {
	post_install $1
}

post_remove() {
	post_install $1
}

op=$1
shift

$op $*
