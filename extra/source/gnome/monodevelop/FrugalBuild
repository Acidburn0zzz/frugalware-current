# Last modified: Thu, 10 Nov 2005 22:48:22 +0100
# Compiling time: ~1 minute
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=monodevelop
pkgver=0.8
pkgrel=1
pkgdesc="A project to port SharpDevelop to Gtk#"
url="http://www.mono-project.com/"
depends=('gecko-sharp' 'gtksourceview-sharp' 'shared-mime-info' 'gnome-vfs' \
	'mono-tools' 'libglade' 'firefox' 'ikvm' 'boo')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
install=$pkgname.install
up2date="lynx -dump 'http://www.go-mono.com/sources/'|grep monodevelop-[0-9\.]*.tar.gz | sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.go-mono.com/sources/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('e7fd6a8d5381f0fe08d6ac1d5f4e6b9d180f7e4c')

build() {
	export MOZILLA_FIVE_HOME=/usr/lib/firefox
	Fbuild --enable-java --enable-boo --disable-update-mimedb --disable-update-desktopdb || return 1
}

# vim: ft=sh
