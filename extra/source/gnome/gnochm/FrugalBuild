pkgname=gnochm
pkgver=0.9.8
pkgrel=1
pkgdesc="Gnome based CHM viewer"
url="http://gnochm.sourceforge.net/pychm.html"
depends=('pychm>=0.8.3' 'pygtk' 'gnome-python')
makedepends=('perl-xml')
groups=('gnome-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
license=("GPL2")
sha1sums=('de22515b1a02c7f30b4e0dbb3d8aba2efadc49b3')

build() {
	Fcd
        find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
        if [ -f omf.make ]; then
            sed -i -e 's/-scrollkeeper-update.*//' omf.make
        fi
	Fmake --disable-schemas-install --enable-desktop-update=no --enable-mime-update=no
	Fmakeinstall
}
