# Last modified: Sat, 12 Mar 2005 15:26:09 +0100
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gtk+2-engines-industrial
pkgver=0.2.36.4
pkgrel=3
pkgdesc="Industrial GTK+ and GTK+2 engine"
depends=('gtk+' 'gtk+2' 'gnome-icon-theme')
makedepends=('intltool')
groups=('gnome-extra')
up2date="lynx -dump 'http://www.artfiles.org/ubuntu.com/archive/pool/main/g/gtk-industrial-engine/?M=D'|grep tar.gz$|sed -n 's/.*_\(.*\).t.*/\1/;1 p'"
source=(http://www.artfiles.org/ubuntu.com/archive/pool/main/g/gtk-industrial-engine/gtk-industrial-engine_$pkgver.tar.gz)
md5sums=('2666b6b721b0cc5766aa53caa6b64957')

build() {
	cd $startdir/src/gtk-industrial-engine-$pkgver
	./autogen.sh --prefix=/usr
	COMMON_FILES=`ls gtk-common`
	for i in $COMMON_FILES; do \
		ln -s ../gtk-common/$i gtk1-engine && \
		ln -s ../gtk-common/$i gtk2-engine ; done

	make || return 1

	make DESTDIR=$startdir/pkg install

	# x-cursors-industrial includes newer Industrial cursor theme.
	rm -r $startdir/pkg/usr/share/icons/Industrial/cursors

	# Remove empty directory.
	rm -r $startdir/pkg/usr/share/icons/gnome
}

# vim: ft=sh
