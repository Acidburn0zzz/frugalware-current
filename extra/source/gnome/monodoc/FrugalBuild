pkgname=monodoc
pkgver=1.1.16
pkgrel=1
pkgdesc="Documentation for mono's .Net class library"
url="http://www.mono-project.com/"
depends=('gtk-sharp' 'desktop-file-utils')
makedepends=('pkgconfig')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://go-mono.com/sources-latest/'|grep -m1 'monodoc-'|sed 's/.*-\(.*\).zip/\1/'"
source=(http://go-mono.com/sources/$pkgname/$pkgname-$pkgver.zip)
sha1sums=('a756a88c31145c3ebf6c320a1d845a623164a443')

# NOTE: Need to build NOT IN chroot !!! <-- ? HMM 

build() {
	[ -f /etc/profile.d/gnome.sh ] && . /etc/profile.d/gnome.sh
	Fbuild
}
