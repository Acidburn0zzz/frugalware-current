# Last modified: Thu, 10 Nov 2005 21:43:10 +0100
# Compiling time: 0.07 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=monodoc
pkgver=1.1.10
pkgrel=1
pkgdesc="Documentation for mono's .Net class library"
url="http://www.mono-project.com/"
depends=('gtk-sharp' 'desktop-file-utils')
makedepends=('pkgconfig')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.go-mono.com/sources/'|grep monodoc-[0-9\.]*.tar.gz | sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.go-mono.com/sources/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('5c8e5c6cd0e0943c1ef2f4472d31cf0b597718cc')

build() {
	[ `id -u` -eq 0 ] || msg "You must be root" && Fdie
	[ -f /etc/profile.d/gnome.sh ] && . /etc/profile.d/gnome.sh
	Fbuild
}

# vim: ft=sh
