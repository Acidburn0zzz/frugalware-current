# Last modified: Sat, 05 Feb 2005 11:04:29 +0100
# Compiling time: 0.15 SBU
# Maintainer: CSÉCSY László <boobaa@ajrg.hu>

pkgname=gnome-mag
pkgver=0.12.1
pkgrel=1
pkgdesc="GNOME screen magnifier"
url="http://www.gnome.org/"
depends=('at-spi')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686')
nondevel=1
[ -e ../../../../source/gnome/up2date.gnome ] && . ../../../../source/gnome/up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
sha1sums=('6026d6114fc9dbe0a1ca14567064aaadf80146ad')

build() {
	[ "$GNOMEDIR" = "" ] && source /etc/profile.d/gnome.sh

	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/gnome

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
