pkgname=gnome-mag
pkgver=0.12.2
pkgrel=1
pkgdesc="GNOME screen magnifier"
url="http://www.gnome.org/"
depends=('at-spi')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686')
nondevel=1
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
sha1sums=('53f0963df8523954a54304edb35b2c293275cd44')

build() {
	[ "$GNOMEDIR" = "" ] && source /etc/profile.d/gnome.sh
	Fcd
	Fmake
	Fmakeinstall DESTDIR=$startdir/pkg
}

# vim: ft=sh

# optimalization OK
