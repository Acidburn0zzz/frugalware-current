pkgname=gnome-mag
pkgver=0.13.0
pkgrel=1
pkgdesc="GNOME screen magnifier"
url="http://www.gnome.org/"
depends=('at-spi' 'libxtst' 'libxdamage' 'libxfixes')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
nondevel=1
Finclude gnome
sha1sums=('4252245bb79f57413ecad2d4c88eb8d3fac8f569')

build() {
	[ "$GNOMEDIR" = "" ] && source /etc/profile.d/gnome.sh
	Fcd
	Fmake
	Fmakeinstall DESTDIR=$startdir/pkg
}

# optimization OK
