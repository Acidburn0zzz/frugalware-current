pkgname=gnome-mag
pkgver=0.12.5
pkgrel=1
pkgdesc="GNOME screen magnifier"
url="http://www.gnome.org/"
depends=('at-spi' 'libxtst' 'libxdamage' 'libxfixes')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
nondevel=1
Finclude gnome
sha1sums=('18f80be7f1a5cac8bc388ef31b44cfdfb404f717')

build() {
	[ "$GNOMEDIR" = "" ] && source /etc/profile.d/gnome.sh
	Fcd
	Fmake
	Fmakeinstall DESTDIR=$startdir/pkg
}

# optimization OK
