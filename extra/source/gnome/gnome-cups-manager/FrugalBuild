# Last modified: Thu, 08 Dec 2005 15:59:12 +0100
# Compiling time: 1.54 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gnome-cups-manager
pkgver=0.31
pkgrel=1
pkgdesc="GNOME CUPS manager application"
url="http://www.gnome.org/"
depends=('libgnomecups' 'gnome-keyring' 'libgnomeui' 'cups')
makedepends=('intltool')
groups=('gnome-extra')
archs=('x86_64')
nondevel=1
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	gnome-cups-manager-0.31-fwspecific.patch)
sha1sums=('4516f6e810dce5548e95a0464b0f7abec9d8ae1a' \
	  '954e43570476a4bbadc42b10ff55a17ba44215a8')

build() {
	Fcd
	Fpatchall
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fmake --disable-schemas-install --enable-flags --disable-scrollkeeper
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# vim: ft=sh

# optimalization OK
