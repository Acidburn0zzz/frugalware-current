# Compiling time: ~0.03 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=monotheka
pkgver=0.0.5
pkgrel=1
pkgdesc="A DivX/DVD library for GNOME"
url="http://monotheka.mdk.org.pl/"
depends=('gtk-sharp' 'sqlite2')
groups=('gnome-extra')
archs=('i686')
up2date="lynx -dump 'http://forgeftp.novell.com/monotheka/0.1-ALPHA/?C=M;O=D'|grep $pkgname-[0-9\.]*\.tar.gz|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://forgeftp.novell.com/monotheka/0.1-ALPHA/$pkgname-$pkgver.tar.gz \
	00-$pkgname-0.0.5-hu.patch)
sha1sums=('9db626e733a4b00a040a8ed5575f7f6eebba02ad' \
	'62b7b8b47edac4e473a3381a68a5517522955a5b')

build()
{
	export MONO_SHARED_DIR=$Fdestdir/weird
	mkdir -p $MONO_SHARED_DIR
	Fbuild --nosleep
	rm -rf $MONO_SHARED_DIR
}

