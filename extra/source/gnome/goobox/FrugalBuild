# Last modified: Fri, 15 Apr 2005 17:19:42 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=goobox
pkgver=0.9.91
pkgrel=1
pkgdesc="A Compact Disk Player for GNOME"
url="http://www.gnome.org/"
depends=('libgnomeui' 'gst-plugins' 'scrollkeeper')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686')
nondevel=1
install=$pkgname.install
[ -e ../../../../source/gnome/up2date.gnome ] && . ../../../../source/gnome/up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('dc15f40e664961c1e4dd7554ea7f02b5' \
	'bd37e2b5c5b72067c51be09286499589')

build() {
	cd $startdir/src/$pkgname-$pkgver
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	./configure --prefix=/usr --sysconfdir=/etc --disable-schemas-install

	make || return 1

	make GCONF_DISABLE_SCHEMA_INSTALL=1 DESTDIR=$startdir/pkg install
}

# vim: ft=sh
