pkgname=straw
pkgver=0.26
pkgrel=1
pkgdesc="Straw is a desktop news aggregator for the GNOME environment"
url="http://gnome.org/projects/straw/index.html"
depends=('python' 'gnome-python' 'gnome-python-extras' 'gnome-python-desktop' 'pygtk' 'libglade' 'gconf' 'libgtkhtml' 'intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
nondevel=1
Finclude gnome
install=straw.install
options=('scriptlet')
sha1sums=('89bac7a6e68d0e790cc443e8e1cef83282f6b569')

build()
{
	Fcd
	python setup.py install --disable-modules-check --disable-schemas-install \
	--prefix=/usr --root=$Fdestdir
}

# optimalization OK
