pkgname=gnomeradio
pkgver=1.6
pkgrel=1
pkgdesc="Gnomeradio is a FM-radio tuner for the GNOME desktop"
url="http://www.wh-hms.uni-ulm.de/~mfcn/gnomeradio"
makedepends=('gettext' 'intltool')
depends=('gtk+2' 'libgnomeui' 'libtasn1')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.wh-hms.uni-ulm.de/~mfcn/gnomeradio/ | grep tarball | sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://www.wh-hms.uni-ulm.de/~mfcn/gnomeradio/packages/$pkgname-$pkgver.tar.gz)
sha1sums=('22240f2ae64e5e7b4e04aedcca0a8383e74b84e6')
install=gnomeradio.install

build() {
	Fcd
	
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
    sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	
	Fmake --disable-install-schemas --disable-scrollkeeper
	make DESTDIR=$Fdestdir install
}

# optimalization OK

# optimization OK
