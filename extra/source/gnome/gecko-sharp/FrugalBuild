# Last modified: Wed, 06 Jul 2005 16:51:00 +0200
# Compiling time: ~9 seconds
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gecko-sharp
pkgver=0.6
pkgrel=2
pkgdesc="A Gtk# Mozilla binding"
url="http://www.go-mono.com/"
depends=('mono' 'gtk-sharp')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="elinks -dump http://www.go-mono.com/packagers/|grep gecko-sharp-[0-9\.]*.tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.go-mono.com/packagers/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('9ce9bb08125f7c7eecf8bd696a3345bd')

build() {
	mkdir -p $startdir/pkg/weird
	export MONO_SHARED_DIR=$startdir/pkg/weird
	mkdir -p $MONO_SHARED_DIR
	[ -f /etc/profile.d/gnome.sh ] && . /etc/profile.d/gnome.sh

	Fcd
	Fmake
	Fmakeinstall GACUTIL="/usr/bin/gacutil /root $startdir/pkg/usr/lib"
	rm -rf $MONO_SHARED_DIR
}

# vim: ft=sh
