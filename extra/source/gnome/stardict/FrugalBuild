pkgname=stardict
pkgver=2.4.5
pkgrel=1
pkgdesc="a Cross-Platform and international dictionary written in Gtk2"
url="http://stardict.sourceforge.net/"
depends=('perl-xml' 'libgnomeui')
groups=('gnome-extra')
archs=('i686')
up2date="lynx -dump http://stardict.sourceforge.net/ | grep released | sed 's/.*Version \([0-9\.]\+\) .*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('df60cbb9396eb86fe2fae19f465ec486815b80c4')

build() {
	Fcd
	Fmake --prefix=/usr --sysconfdir=/etc  --mandir=/usr/share/man
	Fmakeinstall
	Fmkdir /usr/share/$pkgname/dic
}

# vim: ft=sh

# optimalization OK
