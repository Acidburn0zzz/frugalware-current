pkgname=anjuta
pkgver=1.2.4
pkgrel=3
pkgdesc="Anjuta is a versatile IDE for C and C++, written for GTK/GNOME."
url="http://anjuta.sourceforge.net/"
depends=('libgnomeui' 'libgnomeprintui' 'ncurses' 'pcre' 'vte')
makedepends=('perl-xml')
up2date="lynx -dump $url/anjuta.php?page=downloads | grep 'Latest stable' | grep -o [0-9]\.[0-9]\.[0-9] | head -n 1"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz \
        anjuta-encodings.patch0)
sha1sums=('c02e7f148914877760fee05e68fbfeacc20de879' \
          '98d157ac0a3cded3fa167d7b7a30b48aab17a8f9')
license="GPL2"
groups=('gnome-extra')
install=$pkgname.install
archs=('i686' 'x86_64')

build()
{
	Fbuild
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
}

