pkgname=goffice
pkgver=0.1.2
pkgrel=1
pkgdesc="A glib/gtk set of document centric objects and utilities"
url="http://www.gnome.org/"
depends=('libgnomeui' 'libgnomeprint' 'atk' 'libgsf' 'libart_lgpl')
makedepends=('intltool')
groups=('gnome-extra')
archs=('x86_64')
nondevel=1
license=('GPL-2')
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
sha1sums=('a4a9104a9898170b53632f34dfb36912c7d326ed')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		Fsed '-scrollkeeper-update.*' '' omf.make
	fi
	Fmake --disable-schemas-install --disable-scrollkeeper --without-cairo
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimalization OK

