pkgname=liferea
pkgver=1.0
pkgrel=1
pkgdesc="Liferea is a news aggregator for online news feeds."
url="http://liferea.sourceforge.net/"
license="GPL 2"
up2date="lynx -dump http://liferea.sourceforge.net|grep tar\.gz|sed 's|.*liferea-||'|sed 's|\.tar\.gz.*||'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('98b0f574894d62cb6dbe8600b0bcf8c7838bd1c8')
groups=('gnome-extra')
archs=('i686')
depends=('atk' 'gconf' 'pango' 'cairo' 'dbus' 'libgtkhtml')
install=$pkgname.install

build()
{
	Fmake --disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

