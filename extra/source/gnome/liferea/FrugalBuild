# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=liferea
pkgver=1.0_RC2
realver=`echo $pkgver | tr '_' '-'`
pkgrel=1
pkgdesc="Liferea is a news aggregator for online news feeds."
url="http://liferea.sourceforge.net/"
license="GPL2"
up2date="lynx -dump http://liferea.sourceforge.net/ | grep tar.gz | sed 's/.*liferea-\([0-9\.]\+\(\|-RC[0-9]\)\).*/\1/' | tr '-' '_'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$realver.tar.gz)
sha1sums=('99230c65d7fd1cf319c68e2098953c6b75f86377')
groups=('gnome-extra')
archs=('i686')
depends=('gconf' 'dbus' 'libgtkhtml')

build()
{
	Fcd $pkgname-$realver
	Fmake --disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# vim: ft=sh

# optimalization OK
