post_install()
{
    update-desktop-database
    scrollkeeper-update -p `scrollkeeper-config --pkglocalstatedir`
}

post_upgrade()
{
    post_install $1
}

post_remove()
{
    update-desktop-database
    scrollkeeper-update -p `scrollkeeper-config --pkglocalstatedir`
}

op=$1
shift

$op $*

