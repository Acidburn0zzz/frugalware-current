pkgname=gazpacho
pkgver=0.6.2
shortver=`echo $pkgver | cut -d . -f 1,2`
pkgrel=1
pkgdesc="Gazpacho is a fresh new GUI builder for the GTK+ toolkit designed to be ultra easy to use."
url="http://$pkgname.sicem.biz/"
depends=('pygtk')
up2date="lynx -dump $url/downloads | grep 'Linux tarball' | cut -d ' ' -f 10"
source=(http://ftp.acc.umu.se/pub/GNOME/sources/$pkgname/$shortver/$pkgname-$pkgver.tar.bz2)
sha1sums=('75efc1950bca2fde4ba05770da898b83a5d9a577')
license="LGPL2.1"
groups=('gnome-extra')
install=$pkgname.install
archs=('i686')

build()
{
	Fbuild
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
}

# optimalization OK - noarch

