# Last Modified: Fri, 29 Jul 2005 21:21:31 +0200
# Compiling Time: ~10 seconds
# Maintainer: BMH1980 <bmh1980de@yahoo.de>

pkgname=gazpacho
pkgver=0.5.3
shortver=0.5
pkgrel=2
pkgdesc="Gazpacho is a fresh new GUI builder for the GTK+ toolkit designed to be ultra easy to use."
url="http://$pkgname.sicem.biz/"
depends=('gtk+2' 'pygtk')
up2date="lynx -dump $url/downloads | grep 'Linux tarball' | cut -d ' ' -f 10"
source=(http://ftp.acc.umu.se/pub/GNOME/sources/$pkgname/$shortver/$pkgname-$pkgver.tar.bz2)
md5sums=('2116623fc44d11fc775679d2f5d25c6a')
license="LGPL2.1"
groups=(gnome-extra)
install=$pkgname.install
archs=('i686' 'x86_64')

build()
{
    Fcd Gazpacho-$pkgver
    Fmake || return 1
    Fmakeinstall || return 1
}

# optimalization OK - noarch

