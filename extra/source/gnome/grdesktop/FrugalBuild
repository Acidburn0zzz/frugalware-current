# Last Modified: Fri, 05 Aug 2005 18:45:23 +0200
# Compiling Time: ~0.06 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=grdesktop
pkgver=0.23
pkgrel=2
pkgdesc="Another Gtk2 frontend for rdesktop"
url="http://www.nongnu.org/grdesktop/"
depends=('rdesktop' 'libgnomeui')
groups=('gnome-extra')
archs=('x86_64' 'i686')
up2date="lynx -dump 'http://savannah.nongnu.org/download/$pkgname/?M=D'|grep tar.gz$|sort -n -r|head -n 1|sed -n -e 's/.*grdesktop-\(.*\)\.tar\.gz$/\1/' -e '1 p'"
install=$pkgname.install
source=(http://savannah.nongnu.org/download/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('99f3110212a7594bd60c6f9d05bb8afb8e0588f1')

build() {
	Fcd
	find . -name Makefile.in \
	    -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
        [ -f omf.make ] && sed -i -e 's/-scrollkeeper-update.*//' omf.make
	Fmake --disable-schemas-install --with-keymap-path=/usr/share/rdesktop/keymaps
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimalization OK

