pkgname=sound-juicer
pkgver=2.14.4
pkgrel=1
pkgdesc="Sound Juicer is a CD ripper for GNOME 2"
url="http://www.burtonini.com/blog/computers/sound-juicer"
depends=('libstdc++' 'libcdio' 'gnome-media' 'gst-plugins-base' 'gst-plugins-good' 'atk' 'libsm' 'libmusicbrainz' 'pango' 'taglib' \
	'gst-plugins-base-cdparanoia' 'gst-plugins-base-gnomevfs' 'gst-plugins-good-flac' 'gst-plugins-base-pango')
makedepends=('gnome-doc-utils' 'perl-xml')
groups=('gnome-extra')
archs=('i686' 'x86_64')
Finclude gnome
options=('nofakeroot' 'scriptlet')
