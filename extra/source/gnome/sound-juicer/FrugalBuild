pkgname=sound-juicer
pkgver=2.14.2
pkgrel=1
pkgdesc="Sound Juicer is a CD ripper for GNOME 2"
url="http://www.burtonini.com/blog/computers/sound-juicer"
depends=('libstdc++' 'libcdio' 'gnome-media' 'gstreamer' 'atk' 'libsm' 'libmusicbrainz' 'pango')
makedepends=('gnome-doc-utils' 'perl-xml')
groups=('gnome-extra')
archs=('i686' 'x86_64')
