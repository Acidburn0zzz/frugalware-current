# Last modified: Mon, 09 May 2005 12:43:18 +0200
# Compiling time: ~1 minute
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=blam
pkgver=1.6.1
pkgrel=1
pkgdesc="An RSS aggregator written in C#"
url="http://www.imendio.com/projects/blam/"
depends=('gconf' 'gtk-sharp' 'gecko-sharp' 'firefox')
groups=('gnome-extra')
archs=('i686')
makedepends=('intltool')
install=$pkgname.install
[ -e ../../../../source/gnome/up2date.gnome ] && . ../../../../source/gnome/up2date.gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
md5sums=('2b1fff47c5b4b1d8ebf9362caf5d50b7' \
	'0d1d259061b695fb9dd38fcae414fb75')

build() {
	[ "$GNOMEDIR" = "" ] && source /etc/profile.d/gnome.sh
	[ -f /etc/profile.d/mono.sh ] && . /etc/profile.d/mono.sh

	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/opt/gnome --with-mozilla=firefox \
		--disable-schemas-install

	make || return 1

	make GCONF_DISABLE_SCHEMA_INSTALL=1 DESTDIR=$startdir/pkg install
}

# vim: ft=sh
