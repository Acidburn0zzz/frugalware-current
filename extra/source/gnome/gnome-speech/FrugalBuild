pkgname=gnome-speech
pkgver=0.3.10
pkgrel=1
pkgdesc="GNOME Text-to-Speech"
url="http://www.gnome.org/"
depends=('libbonobo' 'festival')
makedepends=('intltool' 'j2re' 'j2sdk')
groups=('gnome-extra')
archs=('i686' 'x86_64')
nondevel=1
Finclude gnome
sha1sums=('6cbcebec462839990cf73acad662986e5cf6fabe')

build() {
	[ "$GNOMEDIR" = "" ] && source /etc/profile.d/gnome.sh

	Fcd
	Fmake
	Fmakeinstall
}

# optimization OK
