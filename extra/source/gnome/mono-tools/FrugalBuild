pkgname=mono-tools
pkgver=1.1.9
pkgrel=1
pkgdesc="Mono Tools is a collection of development and testing programs and utilities for use with Mono."
url="http://www.mono-project.com/"
depends=('gtk-sharp' 'desktop-file-utils' 'gecko-sharp' 'monodoc')
makedepends=('pkgconfig')
groups=('gnome-extra')
archs=('x86_64')
install="$pkgname.install"
up2date="lynx -dump 'http://www.go-mono.com/sources/'|grep mono-tools-[0-9\.]*.tar.gz | sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.go-mono.com/sources/$pkgname/$pkgname-$pkgver.tar.gz \
	mono-tools-gecko-gtksharp-2.0-fix.patch)
sha1sums=('5d2498c032fededdc0dcbd1b8f174e4d1cc09cee' \
	  'cff8a25a4a196ed525c6308e1d1db23ff8ece699')

build() {
	[ -f /etc/profile.d/gnome.sh ] && . /etc/profile.d/gnome.sh
	Fpatchall
	autoreconf || return 1
	Fmake
	# Fix bad link in desktop file
	Fsed 'Exec=${exec_prefix}/bin/monodoc' 'Exec=/usr/bin/monodoc' docbrowser/monodoc.desktop
	Fmakeinstall
}

# vim: ft=sh
