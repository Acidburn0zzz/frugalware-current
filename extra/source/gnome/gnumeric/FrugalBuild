# Last modified: Tue, 04 Apr 2006 21:05:35 +0000
# Compiling time: ~2.12 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=gnumeric
pkgver=1.6.3
pkgrel=2
pkgdesc="The GNOME spreadsheet"
url="http://www.gnome.org/projects/gnumeric/"
depends=('libgnomedb' 'libgda' 'libgsf' 'desktop-file-utils' 'goffice')
makedepends=('intltool' 'pygtk')
groups=('gnome-extra')
archs=('i686' 'x86_64')
license=('GPL-2')
install=$pkgname.install
Finclude gnome
source=(ftp://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
sha1sums=('2261b3276ed5ead65047208a6ddb7f3436b7e544')

build() {
	Fpatchall
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		Fsed '-scrollkeeper-update.*' '' omf.make
	fi
	Fmake --enable-ssindex --disable-schemas-install --disable-scrollkeeper
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
	Frm /usr/share/mc/
}

# optimalization OK

