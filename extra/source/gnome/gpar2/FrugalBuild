pkgname=gpar2
pkgver=0.3
pkgrel=1
pkgdesc="A  GTK+ GUI for Parity Volumes."
url="http://parchive.sourceforge.net/"
depends=('libpar2' 'gtkmm')
rodepends=('par2cmdline')
groups=('gnome-extra')
options=('scriptlet')
archs=('i686' 'x86_64')
purl="http://sourceforge.net/project/showfiles.php?group_id=30568"
up2date="lynx -dump $purl|grep -m1 'gpar2-0.[3-9].tar.gz'|sed 's/.*2-\(.*\).tar.gz .*/\1/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/parchive/$pkgname-$pkgver.tar.gz)
sha1sums=('0ae966d4f29ced3d076a60e99722bee08a53c570')

build()
{
	Fbuild
	Ffilerel gpar2.desktop usr/share/applications/gpar2.desktop
}
