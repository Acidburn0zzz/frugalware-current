post_install() {
        echo -n "updating mime database... "
	    update-mime-database > /dev/null 2>&1
	echo "done."
}

post_upgrade() {
	post_install $1
}

post_remove() {
        echo -n "updating mime database... "
	    update-mime-database > /dev/null 2>&1
	echo "done."
}

op=$1
shift

$op $*
