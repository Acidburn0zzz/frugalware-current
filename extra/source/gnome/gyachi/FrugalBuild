# Last Modified: Wed, 03 May 2006 17:07:48 +0200
# Compiling Time: 0.56 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=gyachi
pkgver=1.0.4
pkgrel=1
pkgdesc="A fork from Gyach Enhanced Yahoo client for Linux"
url="http://gyachi.sourceforge.net/"
depends=('libtool' 'gtk+2' 'atk' 'mcrypt' 'gpgme' 'pango' 'xmms' 'jasper' 'libgtkhtml' 'codecs')
options=('scriptlet')
groups=('gnome-extra')
archs=('i686')
Finclude sourceforge
sha1sums=('e2fe8f32dadc1b0bb3c364b30f309b764961cb2a')

build()
{
	Fbuild --enable-v4l2
	Frm usr/lib/win32
	Fsed 'Icon=.*' 'Icon=/usr/share/gyachi/pixmaps/gyach-icon.xpm' \
		$Fdestdir/usr/share/applications/gyachi.desktop
}


# optimization OK
