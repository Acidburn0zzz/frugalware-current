# Compiling Time: 0.01 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=exaile
pkgver=0.2b
pkgrel=1
pkgdesc="Exaile is a media player aiming to be similar to KDE's AmaroK, but for GTK+"
url="http://www.exaile.org"
depends=('python' 'wxpython' 'pysqlite2' 'pyogg' 'pymad' 'gstreamer' \ 
	'gst-plugins-good' 'gst-plugins-ugly' 'imaging' 'gst-python')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.exaile.org/files/ | Flasttar"
source=($url/files/$pkgname-$pkgver.tar.gz usefpic_on_x86_64.patch)
sha1sums=('603295b63b4f077ebf6af8ac72dea74f2ac9d80b' \
	  '46eaa546d4a7c64a3efc3689a7d8755e658deb6a')

build() {
	Fcd ${pkgname}_${pkgver}
	[ "$CARCH" == "x86_64" ] && (Fpatch usefpic_on_x86_64.patch)
	Fmake
	Fmakeinstall
}

# optimization OK
