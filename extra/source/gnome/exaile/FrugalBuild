# Last Modified: Tue, 04 Jul 2006 01:13:16 +0200
# Compiling Time: 0.01 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=exaile
pkgver=0.2b2
pkgrel=1
pkgdesc="Exaile is a media player aiming to be similar to KDE's AmaroK, but for GTK+"
url="http://www.exaile.org"
depends=('python' 'wxpython' 'pysqlite2' 'pyogg' 'pymad' 'gstreamer' \ 
	'gst-plugins-good' 'gst-plugins-ugly' 'imaging' 'gst-python' 'mutagen' 'pyvorbis')
rodepends=('dbus-gtk+2' 'gst-plugins-base-alsa' 'gst-plugins-good-gconf' 'gst-plugins-good-esd')
groups=('gnome-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
up2date="lynx -dump  http://www.exaile.org/|grep -m1 released|sed 's/.*le \(.*\) .*/\1/'"
source=($url/files/${pkgname}_$pkgver.tar.gz usefpic_on_x86_64.patch)
sha1sums=('84e20e25ff911f4a8ad9c96ae2feb3c62fc4b463' \
          '46eaa546d4a7c64a3efc3689a7d8755e658deb6a')

build() {
	Fcd $pkgname
	[ "$CARCH" == "x86_64" ] && (Fpatch usefpic_on_x86_64.patch)
	Fmake
	Fmakeinstall
}

# optimization OK
